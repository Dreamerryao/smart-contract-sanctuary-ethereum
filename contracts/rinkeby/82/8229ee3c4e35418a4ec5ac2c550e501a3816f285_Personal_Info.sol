pragma solidity >=0.8.0<0.9.0;


contract Personal_Info {

using SafeMath for uint256;

address contractOwner =0x30FF44eF6cAb43a4142bE8E0ed9a8129E8142915;

struct Info{
    string  name;
    string password;
    string email;
    string[100] hash;
    string[100] txHash;
    uint256 no_of_hash;
}

uint256 no_of_people;
Info[] Persons;

constructor(){
no_of_people=0;
}

//Setters



function Get_Info(uint256 id) public view returns(string memory,string memory){
    return (Persons[id].name,Persons[id].email);

}

function Add_Person(string memory _name,string memory _password,string memory _email) public {
     Info memory _person;
     _person.name=_name;
     _person.password=_password;
     _person.email=_email;
     _person.no_of_hash=0;
     Persons.push(_person);
    no_of_people=no_of_people.add(1);
}

function setHash(uint256 _id,string memory _hash) public
{
    Persons[_id].hash[Persons[_id].no_of_hash]=_hash;
    Persons[_id].no_of_hash=Persons[_id].no_of_hash.add(1);
}

function setTxHash(uint256 _id,string memory _txhash) public
{
    Persons[_id].txHash[Persons[_id].no_of_hash-1]=_txhash;
}
//Getter Functions

function getCounter() public view returns(uint256){
    return no_of_people;
}

function getName(uint256 _id) public view returns(string memory)
{
return Persons[_id].name;
}


function getEmail(uint256 _id) public view returns(string memory)
{
return Persons[_id].email;
}

function getPerson(uint256 _id)public view returns(string memory,string memory)
{
    return (Persons[_id].name,Persons[_id].email);
}

function getHash(uint256 _id,uint256 _hashNo)public view returns(string memory)
{
return Persons[_id].hash[_hashNo];
}

function getTxHash(uint256 _id,uint256 _hashNo)public view returns(string memory)
{
return Persons[_id].txHash[_hashNo];
}

function get_no_of_hashes(uint256 _id)public view returns(uint256)
{
    return Persons[_id].no_of_hash;
}

}