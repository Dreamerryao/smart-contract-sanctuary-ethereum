interface IERC20 {
    function transferFrom(address sender, address recipient, uint256 amount) external returns (bool);
}

interface HeroNft {
    function transferFrom(address from,address to,uint256 tokenId) external;
}

contract MarketPlace is Ownable {
    using ECDSA for bytes32;
    using SafeMath for uint256;

    mapping(bytes32 => bool) public hashHistory;

    address public heroAddress;
    address public fundAddress;

    event HeroTrade(bytes32 orderHash, address seller, address buyer, uint256 tokenId, address paymentToken, uint256 price);
    event CancelHeroOrder(bytes32 orderHash, address seller, uint256 tokenId);

    constructor(address _heroAddress, address _fundAddress){
        heroAddress = _heroAddress;
        fundAddress = _fundAddress;
    }

    function setFundAddress(address _fundAddress) external onlyOwner {
        require(_fundAddress != address(0));
        fundAddress = _fundAddress;
    }

    function hashOrder(address _nftToken, uint256 _tokenId, address _paymentToken,uint256 _price,uint256 _fee,
        address _seller, uint256 _listingTime, uint256 _expirationTime)  public pure returns(bytes32){

        return keccak256(abi.encode(_nftToken, _tokenId, _paymentToken, _price, _fee, _seller, _listingTime, _expirationTime));
    }

    function buy(address _nftToken, uint256 _tokenId, address _paymentToken, uint256 _price,uint256 _fee,
        address _seller, uint256 _listingTime, uint256 _expirationTime, bytes memory _rsv) internal returns(bytes32){

        require(_expirationTime >= block.timestamp, "sell order expired");
        require(_price > 0, "price invalid");
        require(_fee > 0 && _fee < _price, "fee invalid");
        require(_seller != msg.sender, "buy self" );

        bytes32 hash = hashOrder(_nftToken, _tokenId, _paymentToken, _price, _fee, _seller, _listingTime, _expirationTime);

        require(!hashHistory[hash], "hash exist");

        address signer = hash.toEthSignedMessageHash().recover(_rsv);
        require(signer == _seller, "signer not match");

        //record order to avoid re-entrance
        hashHistory[hash] = true;

        //transfer price & fee
        if(_paymentToken == address(0)){
            require(msg.value == _price, "price error");

            payable(fundAddress).transfer(_fee);
            payable(_seller).transfer(_price.sub(_fee));
        }else{
            require(IERC20(_paymentToken).transferFrom(msg.sender, fundAddress, _price), "token insufficient");
            require(IERC20(_paymentToken).transferFrom(fundAddress, _seller, _price.sub(_fee)), "fund insufficient");
        }

        //transfer nft
        HeroNft(_nftToken).transferFrom(_seller, msg.sender, _tokenId);

        return hash;
    }

    function buyHero(uint256 _tokenId, address _paymentToken, uint256 _price, uint256 _fee,address _seller,
        uint256 _listingTime, uint256 _expirationTime, bytes memory _rsv) external payable{

        bytes32 hash = buy(heroAddress, _tokenId, _paymentToken, _price, _fee, _seller, _listingTime, _expirationTime, _rsv);

        emit HeroTrade(hash, _seller, msg.sender, _tokenId, _paymentToken, _price);
    }


    function cancelSellHero(uint256 _tokenId, address _paymentToken, uint256 _price, uint256 _fee,
        address _seller, uint256 _listingTime, uint256 _expirationTime, bytes memory _rsv) external{

        require(msg.sender == _seller, "not owner");

        bytes32 hash = hashOrder(heroAddress, _tokenId, _paymentToken, _price, _fee, _seller, _listingTime, _expirationTime);

        require(!hashHistory[hash], "hash exist");

        address signer = hash.toEthSignedMessageHash().recover(_rsv);
        require(signer == _seller, "signer not match");

        //record order
        hashHistory[hash] = true;

        emit CancelHeroOrder(hash, _seller, _tokenId);
    }

}