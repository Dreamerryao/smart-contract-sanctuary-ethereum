pragma solidity ^0.8.6;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";
import "@openzeppelin/contracts/utils/Address.sol"; 
import "./INonFungibleFilmsToken.sol";

contract NonFungibleFilmsMinter is Ownable, ReentrancyGuard {

    // ======== Supply =========
    uint256 public constant MAX_MINTS_PER_TX = 20;
    uint256 public constant MINTS_PER_WHITELIST = 1;
    uint256 public maxMintsPerAddress;
    uint256 public maxTokens;

    // ======== Cost =========
    uint256 public tokenEndingPrice = 0.01 ether;
    uint256 public tokenStartingPrice = 0.08 ether;

    
    // ======== Auction Mechanics =========
    // ======== Price Reduces by 0.01E every 10 mins =========
    uint256 public auctionDiscountedRate = 0.01 ether;
    uint256 public auctionDiscountedPeriod = 10 minutes;
    

    // ======== Fund Management =========
    address public withdrawalAddress = 0xcaFe1fC8Fe3a9Ea448a91Ac458A38Dbb331B08e6; // NFH

    // ======== Sale Status =========
    bool public saleIsActive = false;
    uint256 public immutable auctionSaleStart; // Auction sale start  date/time
    uint256 public immutable  auctionSaleDuration;

    // ======== Mint Tracking =========
    mapping(address => uint256) private addressToMintCount;

    // ======== External Storage Contract =========
    INonFungibleFilmsToken public immutable token;

    // ======== Constructor =========
    constructor(address contractAddress,
                uint256 auctionSaleStartTimestamp,
                uint256 tokenSupply,
                uint256 maxMintsAddress) {
        token = INonFungibleFilmsToken(contractAddress);
        auctionSaleStart = auctionSaleStartTimestamp;
        maxTokens = tokenSupply;
        maxMintsPerAddress = maxMintsAddress;
        auctionSaleDuration = 7 days;
    }

    // ======== Modifier Checks =========    
    modifier isSupplyAvailable(uint256 numberOfTokens) {
        uint256 supply = token.tokenCount();
        require(supply + numberOfTokens <= maxTokens, "Exceeds max token supply!");
        _;
    }
    
    modifier isPaymentCorrect(uint256 numberOfTokens, uint256 price) {
        require(msg.value >= price * numberOfTokens, "Invalid ETH value sent!");
        _;
    }

    modifier isSaleActive() {
        require(saleIsActive, "Sale is not active!");
        _;
    }

    modifier isSaleStarted(uint256 saleStartTime) {
        require(block.timestamp >= saleStartTime, "Sale not started!");
        _;
    }

    modifier isMaxMintsPerWalletExceeded(uint amount) {
        require(addressToMintCount[msg.sender] + amount <= MAX_MINTS_PER_TX, "Exceeds max mint per tx!");
        _;
    }

    // ======== Pricing Functions =========
    function setTokenStartingPrice(uint256 price) external onlyOwner {
        require(price > tokenEndingPrice, "Starting price must be greater than ending price!");
        tokenStartingPrice = price;
    }

    function setTokenEndingPrice(uint256 price) external onlyOwner {
        require(price < tokenStartingPrice, "Ending price must be less than staring price!");
        tokenEndingPrice = price;
    }

    // ======== Auction Functions =========
    function getMintPrice() public view isSaleStarted(auctionSaleStart) returns (uint256) {        
        uint256 discountedPrice = ((block.timestamp - auctionSaleStart) / auctionDiscountedPeriod) * auctionDiscountedRate;
        
        uint256 newPrice = tokenStartingPrice - discountedPrice;

        return newPrice < tokenEndingPrice ? tokenEndingPrice : newPrice;
    }

    // ======== Mint Functions =========
    function mint(uint amount) public payable 
        isSaleActive()
        isSaleStarted(auctionSaleStart)
        isSupplyAvailable(amount) 
        isPaymentCorrect(amount, getMintPrice())
        isMaxMintsPerWalletExceeded(amount)
        nonReentrant  {
            require(amount <= MAX_MINTS_PER_TX, "Exceeds max mint per tx!");

            uint256 mintCost = getMintPrice() * amount;

            require(mintCost <= msg.value, "Ether value sent is incorrect!");

            token.mint(amount, msg.sender);

            if (msg.value > mintCost) {
                Address.sendValue(payable(msg.sender), msg.value - mintCost);
            }
            addressToMintCount[msg.sender] += amount;
    }

    function mintTeamTokens(address _to, uint256 _reserveAmount) public 
        onlyOwner 
        isSupplyAvailable(_reserveAmount) {
            token.mint(_reserveAmount, _to);
    }

    // ======== Utilities =========
    function mintCount(address _address) external view returns (uint) {
        return addressToMintCount[_address];
    }

    function isAuctionSaleActive() external view returns (bool) {
        return block.timestamp >= auctionSaleStart && saleIsActive;
    }

    // ======== State Management =========
    function flipSaleStatus() external onlyOwner {
        saleIsActive = !saleIsActive;
    }
 
    // ======== Token Supply Management=========
    function setMaxMintPerAddress(uint _max) external onlyOwner {
        maxMintsPerAddress = _max;
    }

    function decreaseTokenSupply(uint256 newMaxTokenSupply) external onlyOwner {
        require(maxTokens > newMaxTokenSupply, "Max token supply can only be decreased!");
        maxTokens = newMaxTokenSupply;
    }

    // ======== Withdraw =========
    function setWithdrawalAddress(address _newWithdrawalAddress) public onlyOwner {
        withdrawalAddress = _newWithdrawalAddress;
    }

    function withdraw() public payable onlyOwner {
        uint balance = address(this).balance;
        require(payable(withdrawalAddress).send(balance));
    }
}

