pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "./SafeTrade.sol";

contract SafeTradeFactory is Ownable {

    address withdrawal;
    mapping(bytes32 => address) public availableTokens;
    mapping(address => bool) public isSafeContract;
    SafeTrade public safeTradeContract;

    event NewSafeTrade(address safeTradeAddress, address participant_1, address participant_2);

    function addToken(bytes32 _name, address _token_address) public onlyOwner {
        availableTokens[_name] = _token_address;
    }

    function removeToken(bytes32 _name) public onlyOwner {
        delete availableTokens[_name];
    }

    function getTokenAddress(bytes32 _name) public view returns (address) {
        return availableTokens[_name];
    }

    function changeWithdrawalAddress(address _address) public onlyOwner {
        withdrawal = _address;
    }

    function startSafeTrade(address counterpart) public returns(address) {
        require(msg.sender == tx.origin && !Address.isContract(counterpart), "Participants must be an externally owned accounts.");
        SafeTrade safeTradeChild = new SafeTrade(counterpart, withdrawal);
        isSafeContract[address(safeTradeChild)] = true;
        emit NewSafeTrade(address(safeTradeChild), msg.sender, counterpart);
        return address(safeTradeChild);
    } 

    function withdraw(address _to) public onlyOwner {
        (bool success, ) = _to.call{value: address(this).balance}("");
        require(success, "Failed to send Ether");
    }

    function isLegit(address _contract) public view returns (bool) {
        return isSafeContract[_contract];
    }

    receive() external payable {
        revert();
    }
}

