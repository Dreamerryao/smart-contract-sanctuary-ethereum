                require(success, "Unable to send Ether");
            } else if (asset.identifier == 20) {
                IERC20(asset.tokenAddress).transfer(counterpart_2, (asset.amount / 100 * 97));
                uint256 remaining = IERC20(asset.tokenAddress).balanceOf(address(this));
