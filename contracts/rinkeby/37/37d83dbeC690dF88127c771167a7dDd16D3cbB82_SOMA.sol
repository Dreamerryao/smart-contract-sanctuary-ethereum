import "@openzeppelin/contracts-upgradeable/utils/introspection/ERC165Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

import "./utils/security/IPausable.sol";

import "./ISOMA.sol";

contract SOMA is ISOMA, PausableUpgradeable, ERC165Upgradeable {

    string public constant name = 'SOMA Finance';

    /// @custom:oz-upgrades-unsafe-allow state-variable-immutable
    address public immutable override master;

    // responsible for specific important events which are not
    /// @custom:oz-upgrades-unsafe-allow state-variable-immutable
    address public immutable override subMaster;

    /// @custom:oz-upgrades-unsafe-allow state-variable-immutable
    ISomaAccessControl  public immutable override access;
    /// @custom:oz-upgrades-unsafe-allow state-variable-immutable
    ISomaGuard          public immutable override guard;
    /// @custom:oz-upgrades-unsafe-allow state-variable-immutable
    ISomaSwapFactory    public immutable override swapFactory;
    /// @custom:oz-upgrades-unsafe-allow state-variable-immutable
    ITemplateFactory    public immutable override templateFactory;
    /// @custom:oz-upgrades-unsafe-allow state-variable-immutable
    ILockdropFactory    public immutable override lockdropFactory;
    /// @custom:oz-upgrades-unsafe-allow state-variable-immutable
    IERC20              public immutable override token;

    // keeping the supply the same as what is being held
    address public override mintTo;
    // this will only happen when there is something that is dirty
    address public override seizeTo;

    bytes32 public override snapshotHash;

    mapping(bytes32 => bytes) public override snapshots;

    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor(
        address _master,
        address _subMaster,
        Snapshot memory _snapshot
    ) {
        master = _master;
        subMaster = _subMaster;

        access = _snapshot.access;
        guard = _snapshot.guard;
        swapFactory = _snapshot.swapFactory;
        templateFactory = _snapshot.templateFactory;
        lockdropFactory = _snapshot.lockdropFactory;
        token = _snapshot.token;
    }

    modifier onlyMaster() {
        require(msg.sender == master, 'SOMA: requires master key');
        _;
    }

    modifier onlyMasterOrSubMaster() {
        require(msg.sender == master || msg.sender == subMaster, 'SOMA: requires master or sub master key');
        _;
    }

    function initialize() external initializer {
        __ERC165_init();
        __Pausable_init();
    }

    function __upgrade() external override {
        bytes memory _snapshot = abi.encode(snapshot());
        bytes32 hash = keccak256(_snapshot);

        require(hash != snapshotHash, 'SOMA: INVALID_UPGRADE');

        if (snapshots[hash].length == 0) {
            snapshots[hash] = _snapshot;
        }

        snapshotHash = hash;

        emit SOMAUpgraded(hash, _snapshot);
    }

    /**
     * @dev See {IERC165-supportsInterface}.
     */
    function supportsInterface(bytes4 interfaceId) public view virtual override returns (bool) {
        return interfaceId == type(ISOMA).interfaceId ||
            interfaceId == type(IPausable).interfaceId ||
            super.supportsInterface(interfaceId);
    }

    function pause() external override onlyMasterOrSubMaster {
        _pause();
    }

    function unpause() external override onlyMasterOrSubMaster {
        _unpause();
    }

    function setMintTo(address _mintTo) external onlyMaster override {
        emit MintToUpdated(mintTo, _mintTo, msg.sender);
        mintTo = _mintTo;
    }

    function setSeizeTo(address _seizeTo) external onlyMaster override {
        emit SeizeToUpdated(seizeTo, _seizeTo, msg.sender);
        seizeTo = _seizeTo;
    }

    function snapshot() public override view returns (Snapshot memory _snapshot) {
        _snapshot.templateFactory = templateFactory;
        _snapshot.swapFactory = swapFactory;
        _snapshot.lockdropFactory = lockdropFactory;
        _snapshot.guard = guard;
        _snapshot.access = access;
        _snapshot.token = token;
    }
}

