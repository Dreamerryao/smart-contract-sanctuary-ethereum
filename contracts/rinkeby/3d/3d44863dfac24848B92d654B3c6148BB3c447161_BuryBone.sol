// file: BuryBone.sol
contract BuryBone is ReentrancyGuard, ERC20("BuryBone", "yBONE"), Ownable {
    using SafeMath for uint256;
    IERC20 public bone;

    bool public emergencyFlag = false;
    uint256 public constant resetDuration = 86400 * 1 seconds; // 1 day
    uint256 public releaseDuration; 
    uint256 timeStone;

    struct TimeLock {
        uint256 _amount;
        uint256 _releaseTime;
    }
    
    mapping(address => TimeLock[]) public lockData; // Data: [{amount1, expiry1}, {amount2, expiry2}, ..]

    constructor(IERC20 _bone, uint256 _releaseDuration) public {
        bone = _bone;
        releaseDuration= _releaseDuration;
        timeStone = (block.timestamp / resetDuration) * resetDuration;
    }

    // length of TimeLock[]
    function checkLength(address _account) internal view returns (uint256) {
        return lockData[_account].length;
    }

    // Gives the last timeStone
    function checkEpoch() internal {
        uint256 epochsOver = (block.timestamp - timeStone) / resetDuration;
        timeStone = timeStone.add(epochsOver * resetDuration);
    }

    // User related data: Claimable Amount, locked amount and their respective starting indexes in the list
    function userBalanceData(address _account)
        public
        view
        returns (
            uint256 totalClaimable,
            uint256 lockStartIndex,
            uint256 unlockStartIndex,
            uint256 lockedAmount
        )
    {
        uint256 length = checkLength(_account);
        if (length <= 0) return (0, 0, 0, 0);
        for (uint256 i = length; i > 0; i--) {
            if (lockData[_account][i - 1]._amount > 0) {
                if (block.timestamp > lockData[_account][i - 1]._releaseTime) {
                    totalClaimable = totalClaimable.add(
                        lockData[_account][i - 1]._amount
                    );
                    unlockStartIndex = i - 1;
                } else {
                    lockedAmount = lockedAmount.add(
                        lockData[_account][i - 1]._amount
                    );
                    lockStartIndex = i - 1;
                }
            } else {
                break;
            }
        }
        //  If all the deposits are released
        if (block.timestamp > lockData[_account][length - 1]._releaseTime) {
            lockStartIndex = length;
        }

        return (totalClaimable, lockStartIndex, unlockStartIndex, lockedAmount);
    }

    function lock(uint256 _amount) public nonReentrant {
        require(emergencyFlag == false, "Cannot lock during emergency");
        require(_amount > 0, "Less than minimum amount");

        uint256 length = checkLength(msg.sender);

        checkEpoch();
        TimeLock storage _timeLock;

        _mint(msg.sender, _amount); // minting ratio is 1:1
        bone.transferFrom(msg.sender, address(this), _amount);
        // Update lockData
        if (length > 0) {
            TimeLock storage currentTimeLock = lockData[msg.sender][length - 1];
            if (currentTimeLock._releaseTime != 0) {
                uint256 epochTimeofLast = currentTimeLock._releaseTime.sub(
                    (releaseDuration).add(resetDuration)
                );
                if (block.timestamp.sub(epochTimeofLast) < resetDuration) {
                    currentTimeLock._amount = currentTimeLock._amount.add(
                        _amount
                    );
                } else {
                    // If the last deposit is before the current epoch (Create a new entry)
                    _timeLock._amount = _amount;
                    _timeLock._releaseTime = timeStone.add(
                        releaseDuration.add(resetDuration)
                    );
                    lockData[msg.sender].push(_timeLock);
                }
            } else {
                _timeLock._amount = _amount;
                _timeLock._releaseTime = timeStone.add(releaseDuration).add(
                    resetDuration
                );
                lockData[msg.sender].push(_timeLock);
            }
        } else {
            _timeLock._amount = _amount;
            _timeLock._releaseTime = timeStone.add(
                releaseDuration.add(resetDuration)
            );
            lockData[msg.sender].push(_timeLock);
        }
    }

    function withdrawClaimable(uint256 _amount) public nonReentrant {
        require(emergencyFlag == false, "Cannot withdraw during emergency");
        require(_amount > 0, "amount less than 0");

        uint256 amount_ = _amount;
        uint256 totalClaimable;
        uint256 lockStartIndex;
        uint256 unlockStartIndex;
        uint256 lockedAmount;
        (
            totalClaimable,
            lockStartIndex,
            unlockStartIndex,
            lockedAmount
        ) = userBalanceData(msg.sender);

        require(
            _amount <= totalClaimable,
            "cannot withdraw more than claimable"
        );
        // Update lockData
        for (uint256 i = unlockStartIndex; i < lockStartIndex; i++) {
            if (lockData[msg.sender][i]._amount > _amount) {
                lockData[msg.sender][i]._amount = lockData[msg.sender][i]
                    ._amount
                    .sub(_amount);
                break;
            } else {
                _amount = _amount.sub(lockData[msg.sender][i]._amount);
                delete lockData[msg.sender][i];
            }
        }
        // Actual transfer
        _burn(msg.sender, amount_);
        bone.transfer(msg.sender, amount_);
    }

    // Lets users withdraw all their funds when emergency flag is `true`
    function userEmergencyWithdraw() external nonReentrant {
        require(emergencyFlag == true, "Non-emergency situation");
        uint256 totalBalance = balanceOf(msg.sender);
        // update data
        delete lockData[msg.sender];
        _burn(msg.sender, totalBalance);
        bone.transfer(msg.sender, totalBalance);
    }
    
    // Allows only owner to send funds to `_receiver` when emergency flag is `true`
    function emergencyWithdrawOwner(address _receiver) external onlyOwner {
        require(emergencyFlag == true, "Non-emergency situation");
        uint256 totalBalance = bone.balanceOf(address(this));
        bone.transfer(_receiver, totalBalance);
    }

    function setReleaseDuration(uint256 _releaseDuration) external onlyOwner {
        require(
            _releaseDuration > releaseDuration,
            "New releaseDuration cannot be less than previous"
        );
        releaseDuration = _releaseDuration;
    }

    function setEmergencyFlag() external onlyOwner {
        if (emergencyFlag == true) {
            emergencyFlag = false;
        } else {
            emergencyFlag = true;
        }
    }
}