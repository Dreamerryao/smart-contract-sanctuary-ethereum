pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

import "./UsdbLendingCore.sol";
import "./plugins/ICryptoPunksMarket.sol";

contract UsdbLending is Ownable, ReentrancyGuard, LendingCore {
    using SafeMath for uint256;

    constructor() {

    }

    /**
        @notice standard method to create loan, apr is 3000 means 30%
    **/
    function createLoan(address lender, address borrower, address nftAddress, address currency, uint256 nftTokenId, uint256 duration, uint256 loanAmount, uint256 apr, uint8 nftTokenType, bytes memory sig) external payable nonReentrant {
        bytes32 payloadHash = keccak256(abi.encode(borrower, nftAddress, currency, nftTokenId, duration, loanAmount, apr, nftTokenType));
        bytes32 messageHash = keccak256(abi.encodePacked("\x19Ethereum Signed Message:\n32", payloadHash));
        if (msg.sender == borrower) {
            require(recoverSigner(messageHash, sig) == lender, "This lender signature is invalid.");
        } else {
            require(recoverSigner(messageHash, sig) == borrower, "This borrower signature is invalid.");
        }

        uint256 platformFeeAmount = loanAmount.mul(platformFee).div(10000);
        loans[id].nftAddress = nftAddress;
        loans[id].nftTokenId = nftTokenId;
        loans[id].startTime = block.timestamp;
        loans[id].endTime = loans[id].startTime.add(duration.mul(86400));
        loans[id].currency = currency;
        loans[id].amountDue = loanAmount.add(loanAmount.mul(apr).mul(loans[id].endTime.sub(loans[id].startTime)).div(secondsForYear).div(10000));
        loans[id].status = Status.CREATED;
        loans[id].borrower = payable(borrower);
        loans[id].lender = payable(lender);
        loans[id].platformFeeAmount = platformFeeAmount;
        loans[id].nftTokenType = nftTokenType;
        if (nftTokenType == 2) { // CryptoPunks
            ICryptoPunksMarket(nftAddress).buyPunk(nftTokenId);
        } else {
            transferNFT(borrower, address(this), nftAddress, nftTokenId, nftTokenType);
        }
        transferToken(lender, payable(borrower), currency, loanAmount, platformFeeAmount.div(2));

        emit LoanCreated(
            msg.sender,
            borrower,
            nftAddress,
            nftTokenId,
            id
        );
        ++id;
    }

    /**
        @notice borrower pays back for loan
    **/
    function repayLoan(uint256 loanId, uint256 amountDue) external payable nonReentrant {
        require(loans[loanId].borrower == msg.sender, "message sender is not borrower.");
        require(loans[loanId].status == Status.CREATED, "Loan is not created.");
        require(block.timestamp <= loans[loanId].endTime, "Loan is already expired.");
        require((msg.value > 0 && loans[loanId].currency == address(0) && msg.value == amountDue && amountDue >= loans[loanId].amountDue) || (loans[loanId].currency != address(0) && msg.value == 0 && amountDue >= loans[loanId].amountDue), "Pay back amount is not enough.");

        loans[loanId].status = Status.REPAID;
        transferToken(msg.sender, loans[loanId].lender, loans[loanId].currency, amountDue, loans[loanId].platformFeeAmount.div(2));
        if (loans[loanId].nftTokenType == 2) { // CryptoPunks
            ICryptoPunksMarket(loans[loanId].nftAddress).transferPunk(loans[loanId].borrower, loans[loanId].nftTokenId);
        } else {
            transferNFT(address(this), loans[loanId].borrower, loans[loanId].nftAddress, loans[loanId].nftTokenId, loans[loanId].nftTokenType);
        }

        emit LoanLiquidated(
            loans[loanId].lender,
            msg.sender,
            loans[loanId].nftAddress,
            loans[loanId].nftTokenId,
            loanId
        );
    }


    /**
        @notice lender can liquidate loan item if loan is not paid
    **/
    function liquidateLoan(uint256 loanId) external nonReentrant {
        require(msg.sender == loans[loanId].borrower || msg.sender == loans[loanId].lender, "message should be lender or borrower of this loan.");
        require(loans[loanId].status == Status.CREATED, "Loan is already repaid or liquidated.");
        require(block.timestamp >= loans[loanId].endTime, "Can't terminate loan before loan's end time");

        loans[loanId].status = Status.LIQUIDATED;
        if (loans[loanId].nftTokenType == 2) { // CryptoPunks
            ICryptoPunksMarket(loans[loanId].nftAddress).transferPunk(loans[loanId].lender, loans[loanId].nftTokenId);
        } else {
            transferNFT(address(this), loans[loanId].lender, loans[loanId].nftAddress, loans[loanId].nftTokenId, loans[loanId].nftTokenType);
        }

        emit LoanTerminated(
            loans[loanId].lender,
            msg.sender,
            loans[loanId].nftAddress,
            loans[loanId].nftTokenId,
            loanId
        );
    }

    /**
        @notice set platform fee by owner
    **/
    function setPlatformFee(uint256 fee) external onlyOwner {
        platformFee = fee;
    }
}

