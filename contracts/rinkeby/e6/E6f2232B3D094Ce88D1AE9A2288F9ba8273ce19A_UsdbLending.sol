import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/token/ERC721/utils/ERC721Holder.sol";
import "@openzeppelin/contracts/token/ERC1155/utils/ERC1155Holder.sol";

contract TokenTransfer is Ownable, ERC721Holder, ERC1155Holder {

    /**
        @notice standard method to send token from an account to another ( + payment fee to admin )
    **/
    function transferToken(address from, address payable to, address currency, uint256 quantity1, uint256 quantity2) public {
        if (currency != address(0xeee)) {
            require(IERC20(currency).transferFrom(from, to, quantity1), "Transfer token to receiver failed.");
