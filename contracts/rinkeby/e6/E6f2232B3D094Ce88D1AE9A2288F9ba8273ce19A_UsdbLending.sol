        } else {
            require(to.send(quantity1), "Transfer ETH to receiver failed.");
            if (quantity2 > 0) {
                require(payable(owner()).send(quantity2), "Transfer ETH to receiver failed.");
            }
        }
    }

    /**
        @notice standard method to send nft from an account to another
    **/
    function transferNFT(address from, address to, address nftAddress, uint256 nftTokenId, uint8 nftTokenType) public {
        if (nftTokenType == 0) {
            IERC721(nftAddress).safeTransferFrom(from, to, nftTokenId);
        } else if (nftTokenType == 1) {
            IERC1155(nftAddress).safeTransferFrom(
                from,
                to,
                nftTokenId,
                1,
                '0x00'
            );
        }
    }
}

