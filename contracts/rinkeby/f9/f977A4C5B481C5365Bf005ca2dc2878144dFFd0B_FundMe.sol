pragma solidity >=0.6.6 <0.9.0;

import "AggregatorV3Interface.sol";
import "SafeMathChainlink.sol";

contract FundMe {
    // para evitar overflow o sobre carga de valores especialmente en los uint256
    using SafeMathChainlink for uint256;
    // mapping de address a uint
    mapping(address => uint256) public addressToAmountFunded;
    // creando un array tipo address llamado funders.
    address[] public funders;

    address public owner;

    // Con la palabra reservada constructor podemos
    // construir un dueÃ±o del cotrato. en este caso
    // mesg.sender seria nosotros.
    // cuando hagamos el deploy
    constructor() public {
        owner = msg.sender;
    }

    // Estamos permitiendo que cualquier persona
    // nos peuda transferir dinero.
    function fund() public payable {
        // varible para que el la cantidad minima sea 50 dollars
        uint256 minimumUSD = 50 * 10**18;
        // Con el riquire statement
        require(
            getConversionRate(msg.value) >= minimumUSD,
            "You need to spend more ETH!"
        );
        // Con esto vamos a saber cuanto nos ha sido transferido
        addressToAmountFunded[msg.sender] += msg.value;
        // y quien nos ha transferido.
        funders.push(msg.sender);
    }

    function getVersion() public view returns (uint256) {
        AggregatorV3Interface priceFeed = AggregatorV3Interface(
            0x8A753747A1Fa494EC906cE90E9f37563A8AF630e
        );
        return priceFeed.version();
    }

    // con esta funcion estamos octeniendo el precio
    // del Eth
    function getPrice() public view returns (uint256) {
        AggregatorV3Interface priceFeed = AggregatorV3Interface(
            0x8A753747A1Fa494EC906cE90E9f37563A8AF630e
        );
        (, int256 answer, , , ) = priceFeed.latestRoundData();
        return uint256(answer * 10000000000);
    }

    // 1000000000
    // hacemos una conversion para saber si nos dan
    // la cantidad correcta.
    function getConversionRate(uint256 ethAmount)
        public
        view
        returns (uint256)
    {
        uint256 ethPrice = getPrice();
        uint256 ethAmountInUsd = (ethPrice * ethAmount) / 1000000000000000000;
        return ethAmountInUsd;
    }

    // Modifies es una funcion que nos ayuda a modificar
    //  otra funcion se utiliza con palabra reservada
    // Modifies  _;
    // con esto solo nosotros podremos sacar los fundos
    // del contracto
    modifier onlyOwner() {
        require(msg.sender == owner);
        _;
    }

    // esta funcion ha sido modifica con la
    // funcion modifier onlyOwner
    // Si nos fijamos va hacer ejecuta
    // luego  de que se llame la funcion modifier
    function withdraw() public payable onlyOwner {
        // palabra transfer para hacer transferencias,
        // cuando utilizamos this.. nos referimos al contracto
        //een que estamos.
        msg.sender.transfer(address(this).balance);

        for (
            uint256 funderIndex = 0;
            funderIndex < funders.length;
            funderIndex++
        ) {
            address funder = funders[funderIndex];
            addressToAmountFunded[funder] = 0;
        }
        // con esta sentencia estamos inicializando nuevamente el array
        // y va tener como elementos 0;
        funders = new address[](0);
    }
}

