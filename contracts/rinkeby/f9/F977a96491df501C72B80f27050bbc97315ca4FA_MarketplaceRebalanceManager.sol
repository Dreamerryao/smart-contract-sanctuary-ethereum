import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

import "../interfaces/IExperiPie.sol";
import "../marketplace/IAmunMarketplace.sol";

contract MarketplaceRebalanceManager {
    IExperiPie public immutable basket;
    address public rebalanceManager;
    IAmunMarketplace public marketplace;

    struct OrderStruct {
        address source;
        address target;
        uint256 amount;
        uint256 price;
        uint256 minimumFill;
        address collateral;
        uint256 collateralPrice;
        uint256 collateralTimeLock;
    }

    event Rebalanced(address indexed basket);
    event Ordered(OrderStruct order);
    event RebalanceManagerSet(address indexed rebalanceManager);

    constructor(address _basket, IAmunMarketplace _marketplace) {
        require(_basket != address(0), "INVALID_BASKET");

        basket = IExperiPie(_basket);
        rebalanceManager = msg.sender;
        marketplace = _marketplace;
    }

    modifier onlyRebalanceManager() {
        require(msg.sender == rebalanceManager, "NOT_REBALANCE_MANAGER");
        _;
    }

    function setRebalanceManager(address _rebalanceManager)
        external
        onlyRebalanceManager
    {
        rebalanceManager = _rebalanceManager;
        emit RebalanceManagerSet(_rebalanceManager);
    }

    function removeToken(address _token) internal {
        uint256 balance = basket.balance(_token);
        bool inPool = basket.getTokenInPool(_token);
        //if there is a token balance of the token is not in the pool, skip
        if (balance != 0 || !inPool) {
            return;
        }

        // remove token
        basket.singleCall(
            address(basket),
            abi.encodeWithSelector(basket.removeToken.selector, _token),
            0
        );
    }

    function addToken(address _token) internal {
        uint256 balance = basket.balance(_token);
        bool inPool = basket.getTokenInPool(_token);
        // If token has no balance or is already in the pool, skip
        if (balance == 0 || inPool) {
            return;
        }

        // add token
        basket.singleCall(
            address(basket),
            abi.encodeWithSelector(basket.addToken.selector, _token),
            0
        );
    }

    function lockBasketData(uint256 _block) internal {
        basket.singleCall(
            address(basket),
            abi.encodeWithSelector(basket.setLock.selector, _block),
            0
        );
    }

    function _approve(address token, uint256 amount) internal {
        if (
            IERC20(token).allowance(address(basket), address(marketplace)) <
            amount
        ) {
            basket.singleCall(
                token,
                abi.encodeWithSelector(
                    IERC20(token).approve.selector,
                    address(marketplace),
                    0
                ),
                0
            );
            basket.singleCall(
                token,
                abi.encodeWithSelector(
                    IERC20(token).approve.selector,
                    address(marketplace),
                    uint256(-1)
                ),
                0
            );
        }
    }

    function _createOrder(OrderStruct calldata _order) internal {
        _approve(_order.source, _order.amount);

        basket.singleCall(
            address(marketplace),
            abi.encodeWithSelector(
                marketplace.createOrder.selector,
                _order.source,
                _order.target,
                _order.amount,
                _order.price,
                _order.minimumFill,
                _order.collateral,
                _order.collateralPrice,
                _order.collateralTimeLock
            ),
            0
        );
        emit Ordered(_order);
    }

    /**
        @notice Rebalance underling token
        @param _orders Orders to perform
        @param _deadline Unix timestamp after which the transaction will revert.
    */
    function rebalance(OrderStruct[] calldata _orders, uint256 _deadline)
        external
        onlyRebalanceManager
    {
        lockBasketData(block.number + _deadline);

        uint256 length = _orders.length;
        for (uint256 i; i < length; ++i) {
            _createOrder(_orders[i]);
            addToken(_orders[i].target);
        }

        emit Rebalanced(address(basket));
    }

    /**
        @notice Removes token  that were removed by rebalance
        @param _tokens Tokens to remove
    */
    function removeTokens(address[] calldata _tokens)
        public
        onlyRebalanceManager
    {
        uint256 length = _tokens.length;
        for (uint256 i; i < length; ++i) {
            if (basket.getTokenInPool(_tokens[i])) {
                removeToken(_tokens[i]);
            }
        }
    }

    /**
        @notice Removes token  that were removed by rebalance
        @param _tokens Tokens to add
    */
    function addTokens(address[] calldata _tokens)
        public
        onlyRebalanceManager
    {
        uint256 length = _tokens.length;
        for (uint256 i; i < length; ++i) {
            addToken(_tokens[i]);
        }
    }

    function switchTokens(address[] calldata _in, address[] calldata _out)
        external
        onlyRebalanceManager
    {
        addTokens(_in);
        removeTokens(_out);
    }
}

