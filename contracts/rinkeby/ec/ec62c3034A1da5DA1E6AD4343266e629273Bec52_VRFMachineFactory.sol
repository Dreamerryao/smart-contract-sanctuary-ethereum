import "@openzeppelin/contracts/access/Ownable.sol";

/// @title The Factory of VRFMachine Protocal
/// @notice VRFMachine Factory Contains the working VRFMachines for keychains and insurance
contract VRFMachineFactory is Ownable {
    using SafeMath for uint256;

    using Counters for Counters.Counter;

    Counters.Counter private _VRFIndexCounter;

    address public standardVRFMachine;

    mapping(uint256 => address) public VRFMachines;

    constructor(address _standardVRFMachine) {
        standardVRFMachine = _standardVRFMachine;
        addVRFMachine(_standardVRFMachine);
    }

    function addVRFMachine(address contractAddress) public onlyOwner {
        require(
            getVRFMachineIndex(contractAddress) == 0,
            "VRFMachine already added"
        );
        _VRFIndexCounter.increment();
        VRFMachines[_VRFIndexCounter.current()] = contractAddress;
    }

    function removeVRFMachine(address contractAddress) public onlyOwner {
        uint256 VRFMachineIndex = getVRFMachineIndex(contractAddress);
        require(
            getVRFMachineIndex(contractAddress) > 0,
            "VRFMachine not exist"
        );
        VRFMachines[VRFMachineIndex] = address(0);
    }

    function setStandardVRFMachine(address contractAddress) public onlyOwner {
        require(
            getVRFMachineIndex(contractAddress) > 0,
            "VRFMachine not exist"
        );
        standardVRFMachine = contractAddress;
    }

    function getVRFMachineIndex(address contractAddress)
        public
        view
        returns (uint256)
    {
        for (uint256 i = 1; i <= _VRFIndexCounter.current(); i++) {
            if (VRFMachines[i] == contractAddress) {
                return i;
            }
        }
        return 0;
    }

    function getVRFMachineIndexes() public view returns (uint256[] memory) {
        uint256 j = 0;
        for (uint256 i = 1; i <= _VRFIndexCounter.current(); i++) {
            if (VRFMachines[i] != address(0)) {
                j++;
            }
        }
        uint256[] memory VRFMachineIndexes = new uint256[](j);
        j = 0;
        for (uint256 i = 1; i <= _VRFIndexCounter.current(); i++) {
            if (VRFMachines[i] != address(0)) {
                VRFMachineIndexes[j] = i;
                j++;
            }
        }
        return VRFMachineIndexes;
    }

    function getVRFMachineAddresses()
        public
        view
        returns (address[] memory VRFMachineAddresses)
    {
        uint256 j = 0;
        for (uint256 i = 1; i <= _VRFIndexCounter.current(); i++) {
            if (VRFMachines[i] != address(0)) {
                VRFMachineAddresses[j] = VRFMachines[i];
                j++;
            }
        }
    }

    function getVRFMachineContract(uint256 VRFMachineIndex)
        public
        view
        returns (address)
    {
        return VRFMachines[VRFMachineIndex];
    }
}

