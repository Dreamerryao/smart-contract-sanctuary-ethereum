pragma solidity ^0.8.0;

import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableMap.sol";
import "./libs/SafeMath.sol";
import "./NFTService.sol";
import "./interfaces/INRService.sol";
import "./interfaces/INFTicket.sol";

struct tokenAccount {
    uint256 totalCreditAmount;
    uint256 ticketFeeAmount;
    uint transactionFee;
    uint resellerFee;
}

contract NRService is NFTService, INRService {
     using SafeMath for uint256;
     using EnumerableSet for EnumerableSet.AddressSet;

    EnumerableSet.AddressSet private _whitelistSet;
    mapping(uint256 => tokenAccount) private _tokenAccounts;

    event ticketIssued(uint ticketID, address to, EnergyRequest[] _energyRequests);

    address public immutable _NFTicket;
    address public immutable override nftCert;

    // Price per credit for a ticket in Wei
    uint256 public override pricePerCredit;

    // Keep track of allocated energy for a ticket
    mapping(uint256 => ConsumedRecord[]) private _allocations;

    // Hardcoded energy consumption per region per credit
    EnergyRequest[] public energyRequests;

    constructor (address _nfticket, address _nftCert, uint256 _pricePerCredit) NFTService(_nfticket)
    {
        _NFTicket = _nfticket;
        nftCert = _nftCert;
        pricePerCredit = _pricePerCredit;
        _whitelistSet.add(msg.sender);
 
    }

    function issueNFTicket(address recipient, string calldata tokenURI, EnergyRequest[] calldata _energyRequests, uint256 credits)
        external 
        payable 
        returns (uint256)
    {
        uint256 _ticketID;
        delete energyRequests;

        for (uint256 i = 0; i < _energyRequests.length; i++) {
            energyRequests.push(_energyRequests[i]);
        }

        string calldata URI = tokenURI;
        
        _ticketID = this.buyNFTicket(recipient, URI, credits); 
        
        // Allocate energy from NFTCert contract
        ConsumedRecord[] memory consumedRecords = INFTCert(nftCert).consumeEnergy(energyRequests);

        for (uint256 i = 0; i < consumedRecords.length; i++) {
            _allocations[_ticketID].push(consumedRecords[i]);
        }

        emit ticketIssued(_ticketID, recipient, _energyRequests);
        return(_ticketID);

    }

    function _preMint(address recipient, string calldata tokenURI, uint256 credits) 
        internal
        override
        returns(uint256)
    {
        require(_whitelistSet.contains(msg.sender), "Now allowed");

        uint256 totalPrice = pricePerCredit.mul(credits);

        return(totalPrice);
     
    }

    function settlePrepaid(address recipient, uint256 credits, uint256 newTicketId)
    public
    {
        /**********************************************
        *
        * Fee structure needs to be 
        * a schematized parameter to the smart contract
        *
        ***********************************************/
        uint256 _ticketFee = credits.mul(9).div(10);
        uint _transactionFee = credits.mul(3).div(100);
        uint _resellerFee = credits.mul(7).div(100);

        tokenAccount memory a =  tokenAccount({totalCreditAmount: credits, ticketFeeAmount: _ticketFee, transactionFee: _transactionFee, resellerFee: _resellerFee});

        updateTokenAccount(newTicketId, a);

        /***********************************
        *  TODO hb220702:
        * need to shift to ERC20 payment ()
        **********************************/
        
        TransferHelper.safeTransferNative(owner(), credits);
 
    }

    function updateTokenAccount(uint256 _ticketID, tokenAccount memory _a)
    internal
    {
        _tokenAccounts[_ticketID] = _a;
    }

    function _postMint(address recipient, string calldata tokenURI, uint256 credits, uint256 newTicketId)
        internal
        override
    {
        settlePrepaid(recipient, credits, newTicketId);
        
        // Allocate energy from NFTCert contract
        ConsumedRecord[] memory consumedRecords = INFTCert(nftCert).consumeEnergy(energyRequests);

        for (uint256 i = 0; i < consumedRecords.length; i++) {
            _allocations[newTicketId].push(consumedRecords[i]);
        }
    }

    function updatePricePerCredit(uint256 _pricePerCredit)
        external
        override
        onlyOwner
    {
        pricePerCredit = _pricePerCredit;
    }

    function viewAllocations(uint256 ticketId)
        external
        override
        view
        returns (ConsumedRecord[] memory)
    {
        return _allocations[ticketId];
    }

    function addWhitelist(address _address)
    external
    override
    onlyOwner
  {
    _whitelistSet.add(_address);
  }

  function removeWhitelist(address _address)
    external
    override
    onlyOwner
  {
    _whitelistSet.remove(_address);
  }

  function inWhitelist(address _address)
    external
    view
    override
    returns (bool)
  {
    return _whitelistSet.contains(_address);
  }
}

