interface IERCToken{
    function setApprovalForAll(address operator, bool approved) external;
    function safeTransferFrom(address from, address to, uint256 id, uint256 amount, bytes memory data) external;
}
interface IERC1155 {
    function safeTransferFrom(address _from, address _to, uint256 _id, uint256 _value, bytes calldata _data) external;
    function supportsInterface(bytes4 interfaceId) external returns (bool);
    function _setApprovalForAll(address from, address to, bool status) external;
}
interface IERC721 {
    function _setApprovalForAll(address from, address to, bool status) external;
    function safeTransferFrom(address _from, address _to, uint256 _tokenId, bytes memory data) external payable;
    function supportsInterface(bytes4 interfaceId) external returns (bool);
}
contract ERCHolders is AccessControl {
    bytes32 public constant URI_SETTER_ROLE = keccak256("URI_SETTER_ROLE");
    bytes32 public constant MINTER_ROLE = keccak256("MINTER_ROLE");
    // bytes4 public constant IID_IERC1155 = type(IERC1155).interfaceId;
    // bytes4 public constant IID_IERC721 = type(IERC721).interfaceId;
    // const ERC1155InterfaceId: string = "0xd9b67a26";
    // const ERC721InterfaceId: string = "0x80ac58cd";
    // ERC721 erc721 = new ERC721("GameItem", "ITM");
    // ERC1155 erc1155 = new ERC1155("");
    structERC[] tokenStorage;
    bytes public interfaceId = "";
    constructor() {
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(URI_SETTER_ROLE, msg.sender);
        _grantRole(MINTER_ROLE, msg.sender);
    }
    enum ERC_TYPE {
        ERC721,
        ERC1155
    }
    Item[] Items;
    struct Item{
        address item;
        uint256 tokenId;
        uint256 itemId;
        uint256 amount;
        ERC_TYPE ercType;
    }
    struct structERC {
        address Item;
        ERC_TYPE ERCtype;
    }
    function setERC(address token, ERC_TYPE dataType) public returns (bool){
        for(uint i = 0; i < tokenStorage.length; i++){
            if(tokenStorage[i].Item == token) return false;
        }
        tokenStorage.push(structERC(token, dataType));
        return true;
    }
    function checkNFT1155(address _address) public returns (bool){
        return IERC1155(_address).supportsInterface(0xd9b67a26);
    }
    function checkNFT721(address _address) public returns (bool){
        return IERC721(_address).supportsInterface(0x80ac58cd);
    }
    function getItemByItemId(uint256 itemId) public view returns(bool, Item memory){
        for(uint256 i = 0; i < Items.length; i++){
            if(Items[i].itemId == itemId) return (true, Items[i]);
        }
        return (false, Item(address(0), 0, 0, 0, ERC_TYPE.ERC721));
    }
    function deposit(address item, uint256 tokenId, uint256 amount) public returns (uint256 poolId){
        //(bool found,) = getItemByItemId(tokenId);
        //require(bytes(name).length > 0, "Item name can not be empty");
        //require(price > 0, "Price must be greater than zero");
        require(item != address(0) && item != msg.sender, "Address is invalid");
        //require(amount > 0, "Invalid amount");
        //require(!found, "Item is already created");
        ERC_TYPE ercType;
        if(checkNFT1155(item)){
            ercType = ERC_TYPE.ERC1155;
            IERC1155(item).safeTransferFrom(msg.sender, address(this), tokenId, amount, "");
        } else if(checkNFT721(item)){
            ercType = ERC_TYPE.ERC721;
            IERC721(item).safeTransferFrom(msg.sender, address(this), tokenId, "");
        } else {
            return 0;
        }
        //erc1155.supportsInterface(interfaceId);
        //IERCToken(item).safeTransferFrom(msg.sender, address(this), itemId, amount, "");
        //transferFrom(msg.sender, addr ess(this), itemId);
        Items.push(Item(
            item,
            tokenId,
            Items.length,
            amount,
            ercType
        ));
        return tokenId;
    }
    function withdraw(uint poolId, address to) public returns (Item memory){
        require(poolId > 0, "PoolId not found");
        require(address(0) != to, "Recipient address not found");
        (bool status, Item memory data) = getItemByItemId(poolId);
        if(!status) return Item(address(0), 0, 0, 0, ERC_TYPE.ERC721);
        if(data.ercType == ERC_TYPE.ERC721){
            IERC721(data.item)._setApprovalForAll(address(this), to, true);
            IERC721(data.item).safeTransferFrom(address(this), to, data.tokenId, "");
        } else if(data.ercType == ERC_TYPE.ERC1155){
            IERC1155(data.item)._setApprovalForAll(address(this), to, true);
            IERC1155(data.item).safeTransferFrom(address(this), to, data.tokenId, data.amount, "");
        }
        return data;
    }
    function hasItems(address item, uint256 tokenId) public returns(bool isEmpty){
        for(uint256 i = 0; i < Items.length; i++){
            if(Items[i].item == item && Items[i].tokenId == tokenId) return true;
        }
        return false;
    }
    function supportsInterface(bytes4 interfaceId)
        public
        view
        override(AccessControl)
        returns (bool)
    {
       return super.supportsInterface(interfaceId);
    }
}

