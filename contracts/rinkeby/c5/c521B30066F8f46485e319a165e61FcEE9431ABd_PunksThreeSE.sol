pragma solidity ^0.8.15;

import "@rari-capital/solmate/src/auth/Owned.sol";
import "@rari-capital/solmate/src/tokens/ERC721.sol";
import "@openzeppelin/contracts/utils/Strings.sol";
import "@openzeppelin/contracts/utils/Counters.sol";

contract PVERC721 is ERC721, Owned {
    using Strings for uint256;
    using Counters for Counters.Counter;

    Counters.Counter internal tokenCounter;
    string uri;

    error notExists();

    constructor(
        string memory _name,
        string memory _symbol,
        string memory _uri
    ) ERC721(_name, _symbol) Owned(msg.sender) {
        uri = _uri;
    }

    function _mintMany(address _account, uint256 _amount) internal {
        for (uint256 i; i < _amount; ) {
            tokenCounter.increment();
            _internalMint(_account);

            unchecked {
                i++;
            }
        }
    }

    function _internalMint(address _account) internal {
        tokenCounter.increment();
        _mint(_account, tokenCounter.current());
    }

    function setURI(string memory _uri) public onlyOwner {
        uri = _uri;
    }

    function tokenURI(uint256 tokenId) public view override returns (string memory) {
        if (tokenCounter.current() < tokenId) {
            revert notExists();
        }

        string memory baseURI = uri;
        return bytes(baseURI).length > 0 ? string(abi.encodePacked(baseURI, tokenId.toString())) : "";
    }
}

