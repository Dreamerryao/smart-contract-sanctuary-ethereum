import "../libraries/Randomness/Randomness.sol";

/*
 * @dev SafeListMintErc1155Random allows safe listed minters to mint tokens
 * based on randomness out of a range of given numbers.
 */
contract SafeListMintErc1155Random is SafeListMintErc1155Base {
    // @dev the token ids are random numbers between 1 and maxTokenId (inclusive)
    uint256 public maxTokenId;

    // @dev keeps track of the minted tokens
    using Counters for Counters.Counter;
    Counters.Counter private _tokensCounter;

    constructor(
        string memory _uriSchema,
        address[] memory _adminList,
        address[] memory _safeList,
        uint256 _costInWei,
        uint256 _maxSupply,
        uint256 _maxMintAmount,
        uint256 _maxTokenId,
        string memory _name
    )
        SafeListMintErc1155Base(
            _uriSchema,
            _adminList,
            _safeList,
            _costInWei,
            _maxSupply,
            _maxMintAmount,
            _name
        )
    {
        maxTokenId = _maxTokenId;
    }

    // @dev makes sure there is still supply of the token
    modifier onlyHaveSupply() {
        require(_tokensCounter.current() < maxSupply, "no supply");
        _;
    }

    // @dev mint a token based on randomness
    function mint()
        external
        payable
        onlyRunning
        onlyEnabled
        onlyHaveSupply
        onlySafeListedMinter
        nonReentrant
        returns (uint256)
    {
        require(msg.value >= costInWei, "no funds");

        uint256 newId = Randomness.psuedoRandom(1, maxTokenId);
        _tokensCounter.increment();

        _mint(msg.sender, newId, 1, "");
        _incrementMintedCount(1);
        emit OnMint(msg.sender, newId);

        return newId;
    }
}

