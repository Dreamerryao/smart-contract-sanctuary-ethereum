        uint256 _amount,
        string memory _txHash,
        address _receiver,
        bytes32[] memory _r,
        bytes32[] memory _s,
        uint8[] memory _v
    ) onlyInexistentHash(_txHash) external returns (bool){
        address[] memory _signers = _deriveSigners(_txHash, _amount, _r, _s, _v);

        require(
            !checkSignersCopies(_signers),
            "Bridge: signatures contain copies"
        );

