contract SaleLPRouter is Context {

    IERC20 private weth;
    IERC20 private dai;

    IUniswapV2Router02 private _uniswapRouter ;
    IUniswapV2Factory private _uniswapFactory ;

    constructor(IERC20 _weth, IERC20 _dai,IUniswapV2Router02 _router, IUniswapV2Factory _factory  ) public{
        weth=_weth;
        dai = _dai;
        _uniswapRouter = _router;
        _uniswapFactory = _factory;
    }
    event LiquidityCreated(
        uint256 tokenAmount,
        uint256 ethAmount,
        uint256 liquidity
    );

    function createLiquidity()
        external
        returns (
            uint256,
            uint256,
            uint256
        )
    {
        weth.approve(address(_uniswapRouter), weth.balanceOf(address(this)));
        dai.approve(address(_uniswapRouter), dai.balanceOf(address(this)));
        (
            uint256 wethAmount,
            uint256 daiAmount,
            uint256 liquidity
        ) = _uniswapRouter.addLiquidity(
                address(weth),
                address(dai),
                weth.balanceOf(address(this)),
                dai.balanceOf(address(this)),
                weth.balanceOf(address(this)),
                dai.balanceOf(address(this)),
                msg.sender,
                block.timestamp + 100
            );
        emit LiquidityCreated(wethAmount, daiAmount, liquidity);
        return (wethAmount, daiAmount, liquidity);
    }

    function getLPTokenAddress(address tokenaddress, address wbnbAddress)
        public
        view
        returns (address)
    {
        return _uniswapFactory.getPair(tokenaddress, wbnbAddress);
    }
}