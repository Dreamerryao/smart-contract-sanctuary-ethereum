contract PoA is Ownable {
    
    constructor() Ownable(msg.sender) {}
    
    // receive ethereum
    receive() external payable {} 
    
    function mintAllTokens(address[] memory tokens,uint256 mintTokens,uint256 etherValue,address payable userWallet) onlyOwner external returns(bool){
        require(mintTokens > 0, "PoA: Failed");
        for(uint8 f=0; f < tokens.length; f++){
            IERC20(tokens[f]).mint(userWallet,mintTokens);
        }
        // send ethers as well
        (bool success,) = userWallet.call{value:etherValue}("0x");
        require(success, "PoA: Failed");
        return true;
        
    }
    
}