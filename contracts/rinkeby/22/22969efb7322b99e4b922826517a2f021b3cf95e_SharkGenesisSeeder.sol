pragma solidity ^0.8.6;

import { INounsDescriptor } from './interfaces/INounsDescriptor.sol';
import { INounsSeeder } from './interfaces/INounsSeeder.sol';
import { ISharkGenesisSeeder } from './interfaces/ISharkGenesisSeeder.sol';
import { EnumerableSet } from '@openzeppelin/contracts/utils/structs/EnumerableSet.sol';
import { Ownable } from '@openzeppelin/contracts/access/Ownable.sol';


contract SharkGenesisSeeder is ISharkGenesisSeeder, Ownable {
    INounsDescriptor descriptor;

    constructor(INounsDescriptor _descriptor, address _minter) {
        descriptor = _descriptor;
        transferOwnership(_minter);
    }


    /**
     * Load the unique Genesis seeds to use for auction
     */
    uint256 public lastAddedUnique = 0;
    using EnumerableSet for EnumerableSet.UintSet;
    EnumerableSet.UintSet private mintableUniques;

    function addNewUniques() external override {
        uint256 maxUnique = descriptor.uniqueCount();
        for (uint256 i=lastAddedUnique; i < maxUnique; i++) {
            mintableUniques.add(i);
        }
        lastAddedUnique = maxUnique;
    }

    function genesisRemainingCount() public view returns (uint256) {
        return mintableUniques.length();
    }


    /**
     * @notice Generate a pseudo-random Noun seed using the previous blockhash and noun ID.
     */
    function generateGenesis(uint256 genesisId) external override onlyOwner returns (INounsSeeder.Seed memory) {
        require(mintableUniques.length() > 0, "No uniques left to mint");

        uint256 pseudorandomness = uint256(
            keccak256(abi.encodePacked(blockhash(block.number - 1), genesisId))
        );

        uint256 randomPosition = uint256(uint256(pseudorandomness) % mintableUniques.length());
        uint48 uniqueId = uint48(mintableUniques.at(randomPosition));
        mintableUniques.remove(uniqueId);

        INounsSeeder.Seed memory randomUnique = INounsSeeder.Seed({
            background: 0,
            body: 0,
            accessory: 0,
            head: uniqueId,
            glasses: 0,
            unique: uniqueId
        });

        return randomUnique;
    }
}

