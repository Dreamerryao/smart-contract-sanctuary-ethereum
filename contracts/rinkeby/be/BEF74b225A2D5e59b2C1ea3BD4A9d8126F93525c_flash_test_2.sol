    ) external;
}

contract flash_test_2 is IUniswapV2Callee {
    //quick factory address
    //quick router address
    // sushi factory
    // sushi router
    address private constant quickFactory =
        0x5757371414417b8C6CAad45bAeF941aBc7d3Ab32;
    address private constant quickRouter =
        0xa5E0829CaCEd8fFDD4De3c43696c57F7D7A678ff;
    address private constant sushiFactory =
        0xc35DADB65012eC5796536bD9864eD8773aBc74C4;
    address private constant sushiRouter =
        0x1b02dA8Cb0d097eB8D57A175b88c7D8b47997506;

    function test_flash_2(
        address zerotoken,
        uint256 amount,
        address onetoken
    ) external {
        address pair = IUniswapV2Factory(quickFactory).getPair(
            zerotoken,
            onetoken
        );
        address pair1 = IUniswapV2Factory(sushiFactory).getPair(
            zerotoken,
            onetoken
        );
        require(pair != address(0), "!pair");
        require(pair1 != address(0), "!pair1");
        address token0 = IUniswapV2Pair(pair).token0();
        address token1 = IUniswapV2Pair(pair).token1();
        uint256 amount0Out = zerotoken == token0 ? amount : 0;
        uint256 amount1Out = zerotoken == token1 ? amount : 0;
        bytes memory data = abi.encode(zerotoken, amount);
        IUniswapV2Pair(pair).swap(amount0Out, amount1Out, address(this), data);
    }

    // called by pair contract
    function uniswapV2Call(
        address _sender,
        uint256 _amount0,
        uint256 _amount1,
        bytes calldata _data
    ) external override {
        address token0 = IUniswapV2Pair(msg.sender).token0();
        address token1 = IUniswapV2Pair(msg.sender).token1();
        address pair = IUniswapV2Factory(quickFactory).getPair(token0, token1);
        address pair1 = IUniswapV2Factory(sushiFactory).getPair(token0, token1);
        require(msg.sender == pair, "!pair");
        require(_sender == address(this), "!sender");
        (address tokenBorrow, uint256 amount) = abi.decode(
            _data,
            (address, uint256)
        );
        address[] memory path1 = new address[](2);
        address[] memory path2 = new address[](2);
        path1[0] = token0;
        path1[1] = token1;
        path2[0] = token1;
        path2[1] = token0;
        uint256[] memory amountOutMins1 = IUniswapV2Router01(quickRouter)
            .getAmountsOut(amount, path1);

        uint256 outmin1 = amountOutMins1[path1.length - 1];
        uint256[] memory amountOutMins2 = IUniswapV2Router01(quickRouter)
            .getAmountsOut(outmin1, path2);
        uint256 outmin2 = amountOutMins2[path2.length - 1];
        IERC20(token0).transferFrom(msg.sender, address(this), amount);
        IERC20(token0).approve(quickRouter, amount);
        IUniswapV2Router01(quickRouter).swapExactTokensForTokens(
            amount,
            outmin1,
            path1,
            address(this),
            block.timestamp
        );
        IERC20(token1).transferFrom(pair1, address(this), outmin1);
        IERC20(token1).approve(sushiRouter, outmin1);
        IUniswapV2Router01(sushiRouter).swapExactTokensForTokens(
            outmin1,
            outmin2,
            path2,
            address(this),
            block.timestamp
        );
        uint256 fee = ((amount * 3) / 997) + 1;
        uint256 amountToRepay = amount + fee;
        IERC20(token0).transfer(pair, amountToRepay);
        IERC20(token0).transfer(tx.origin, outmin2 - amountToRepay);
        //transfer balance to my account
    }
}

