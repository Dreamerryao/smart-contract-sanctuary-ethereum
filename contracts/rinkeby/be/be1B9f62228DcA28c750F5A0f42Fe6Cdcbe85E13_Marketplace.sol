import { Ownable } from '@openzeppelin/contracts/access/Ownable.sol';
import { ERC1155 } from '@openzeppelin/contracts/token/ERC1155/ERC1155.sol';
import { IERC1155 } from '@openzeppelin/contracts/token/ERC1155/IERC1155.sol';
import { ERC1155Supply } from '@openzeppelin/contracts/token/ERC1155/extensions/ERC1155Supply.sol';
import { ERC1155Holder } from '@openzeppelin/contracts/token/ERC1155/utils/ERC1155Holder.sol';
import { ERC1155Receiver } from '@openzeppelin/contracts/token/ERC1155/utils/ERC1155Receiver.sol';
import { IERC1155Receiver } from '@openzeppelin/contracts/token/ERC1155/IERC1155Receiver.sol';

import {SafeTransferLib} from "lib/solmate/src/utils/SafeTransferLib.sol";
import { CrucibleSkin } from './CrucibleSkin.sol';

contract Marketplace is Ownable {
	
	struct Offer {
		bool exists;
		bool auction; 
		uint32 expiration; // year 2038
		// 56 bits left
		uint128 amount; 
		uint128 price;
	}

	mapping(bytes32 => Offer) internal offers;

	address public immutable crucibleSkin;

	event NewOffer(uint256 skinId, address seller);
	event TakeOffer(bytes32 offerId);
	event RemoveOffer(bytes32 offerId);

	constructor(address _crucibleSkin) Ownable() {
		crucibleSkin = _crucibleSkin;
	}

    /// @notice put a skin available to buy
	/// @dev 
    /// @param skinId skin id
    /// @param amount amount of skins 
	/// @param price asking price
	function offerSkin(
		uint256 skinId,
		uint128 amount,
		uint128 price,
		uint32 expiration
	) public {
		// require at least 1
		require(amount > 0, "amount is 0");
		// price must be greater than 0
		// define minimun price?
		require(price > 0, 'price is zero');
		// expiration must be in the future
		require(expiration > block.timestamp, "old expiration");
		// check for enough balance
		require(
			IERC1155(crucibleSkin).balanceOf(msg.sender, skinId) >= amount,
			'not enough balance'
		);

		// get offer id 
		bytes32 offerId = getOfferId(skinId, msg.sender);
		// set offer's price
		offers[offerId] = Offer({
			auction: false,
			exists: true,
			expiration: expiration,
			amount: amount,
			price: price
		});

		// emit event
		emit NewOffer(skinId, msg.sender);
	}

    /// @notice buys an offered skin
	/// @dev `seller` must have at least `amount` of `skinId` tokens
	///		 
    /// @param skinId skin id
	/// @param seller address of the skin' seller
    /// @param receiver address to send the skin bought 
	function buyOffer(
		uint256 skinId,
		address seller,
		address receiver
	) public payable {

		// todo : add this as param
		uint256 amount = 1;

		// receiver cannot be zero address
		require(receiver != address(0), "receiver is zero address");
		
		// check for sufficient balance
		require(
			IERC1155(crucibleSkin).balanceOf(seller, skinId) >= amount,
			"not enough balance"
		);

		bytes32 offerId = getOfferId(skinId, seller);
		Offer storage offer = offers[offerId];
		// not needed?
		require(offer.exists, "invalid offer");
		require(offer.auction == false, "offer is auction");
		
		require(offer.expiration >= block.timestamp, "old offer");

		// check for sufficient payment for offer
		require(msg.value >= offer.price * amount, "not enough ether");
		
		// todo : this is not necessary if SkinMarketplace is CrucibleSkin
		// require(IERC1155(crucibleSkin).isApprovedForAll(seller, address(this)), "not approved!");

		// decrement offer's amount
		offer.amount = offer.amount - 1;
		if (offer.amount == 0) {
			_removeOffer(offerId);
		}

		// transfer crucible skin from `seller` to `receiver`
		IERC1155(crucibleSkin).safeTransferFrom(seller, receiver, skinId, amount, '');

		// transfer payment - call unknown address
		payable(seller).transfer(msg.value);

		emit TakeOffer(offerId);
	}

	function buyOffer(
		uint256 skinId,
		address seller
	) public payable {
		buyOffer(skinId, seller, msg.sender);
	}

	function getOfferId(uint256 skinId, address seller) internal pure returns (bytes32 offerId) {
		return keccak256(abi.encodePacked(skinId, seller));
	}

    /// @notice remove skin offered in the marketplace
    /// @param offerId bytes of the hash for keccak256(skinId, seller)
	function _removeOffer(bytes32 offerId) internal {
		// bytes32 offerId = getOfferId(skinId, seller);
		// delete from storage
		delete offers[offerId];
		// emit event
		emit RemoveOffer(offerId);
	}

    /// @notice remove skin offered in the marketplace
    /// @param skinId skin id
	function removeOffer(uint256 skinId) public {
		bytes32 offerId = getOfferId(skinId, msg.sender);
		require(_hasOffers(offerId), "invalid offer");
		_removeOffer(offerId);
	}

    // getters

	function _hasOffers(bytes32 offerId) internal view returns (bool) {
		return offers[offerId].exists;
	}

	function hasOffers(uint256 skinId, address seller) public view returns (bool) {
		bytes32 offerId = getOfferId(skinId, seller);
		return offers[offerId].exists;
	}

    function getOffer(uint256 skinId, address seller) public view returns (Offer memory offer) {
		return offers[getOfferId(skinId, seller)];
	}

    /// @notice withdraw ether from the contract
    /// @param to address to send the ether
	function withdraw(address to) external {
		require(msg.sender == owner(), "not the owner");
		require(to != address(0), "invalid address");
        // perform transfer
        SafeTransferLib.safeTransferETH(to, address(this).balance);
	}

    receive() external payable {}

}

