pragma solidity 0.7.6;
pragma abicoder v2;

import "@openzeppelin/contracts/math/SafeMath.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

contract PFanTokenSender is Ownable {
    using SafeMath for uint256;

    IERC20 public token;
    mapping(address => bool) public airdrops;
    mapping(string => address) internal idToAddressMap;
    mapping(string => bool) internal approvedUUIDMap; // uuid-> check approved
    string[] internal approvedUUIDArray;

    Transaction[] public transactionArray; 

    struct Transaction {
        string serverUuid;
        address userAddress;
        uint256 airdropAmmount;
        uint256 claimedDate;
    }

    event ClaimAirDrop(
        string serverUuid,
        address userAddress,
        uint256 claimedDate
    );


    constructor() {

        //address v2Address = address(0x217BED0d3A967d063eb287445A1eccac5C2E09BC); //pfan powerdao
        //polygon address: 0x098b5df20306086bea354d5e162dd6d0f357d889
        //goerli powerdao 0x90fc9f5a30061de27226ab9012d06985b8b89410
        address v2MaticAddress = address(0x671781D2792708d7d9E3eF2ABc145b11be910e6B);

        token = IERC20(v2MaticAddress);
    }

    function claimHundredPFAN(string memory _uuid) public {
        require(idToAddressMap[_uuid] == msg.sender, "Cannot claim for given userId");
        require(airdrops[msg.sender] == false, "Already claimed");
        require(approvedUUIDMap[_uuid] == true, "Not Approved uuid");

        airdrops[msg.sender] = true;
        token.transfer(msg.sender, 100 ether);


        //add to trx history

        transactionArray.push(
            Transaction(
                _uuid,
                msg.sender,
                100,
                block.timestamp
            )
        );

        emit ClaimAirDrop(
         _uuid,
         msg.sender,
         block.timestamp
        );

    }//end 100 pfan claim

    function claimThousandPFAN(string memory _uuid) public {
        require(idToAddressMap[_uuid]== msg.sender, "Cannot claim for given userId");
        require(airdrops[msg.sender] == false, "Already claimed");
        require(approvedUUIDMap[_uuid] == true, "Not Approved uuid");
        //check if uuid is in the list and email is not empty

        airdrops[msg.sender] = true;
        token.transfer(msg.sender, 1000 ether);

        //add to trx history

        transactionArray.push(
            Transaction(
                _uuid,
                msg.sender,
                1000,
                block.timestamp
            )
        );

        emit ClaimAirDrop(
         _uuid,
         msg.sender,
         block.timestamp
        );

    }//end 1000 pfan claim

    function getAddressById(string memory uId) public view onlyOwner returns ( address){
         return idToAddressMap[uId];
    }

    function setSingleApprovedId(string memory _singleUUID, address _userAddress) public onlyOwner {
        //return approvedUUIDArray;
        approvedUUIDArray.push(_singleUUID);
        approvedUUIDMap[_singleUUID] = true;
        idToAddressMap[_singleUUID] = _userAddress;
    }

    function setAllApprovedIds(string[] memory _allUUIDArray, address[] memory _userAddress) public onlyOwner {
        //return approvedUUIDArray;
        require(_allUUIDArray.length == _userAddress.length, "Id and address array should be equal in length");
        approvedUUIDArray = _allUUIDArray;

        for(uint256 i=0; i < _allUUIDArray.length; i++) {
            approvedUUIDMap[_allUUIDArray[i]] = true;
            idToAddressMap[_allUUIDArray[i]] = _userAddress[i];
        }
    }

    function getAllApprovedIds() public view onlyOwner returns( string[] memory) {
        return approvedUUIDArray;
    }

    function checkIfApprovedId(string memory _serverUUID) public view returns(bool) {
        return approvedUUIDMap[_serverUUID];
    }

    function setTokenAddress(address _token) public onlyOwner {
        require(_token != address(0));
        token = IERC20(_token);
    }

    function addTokens(uint256 amount) public onlyOwner {
        require(amount > 0);
        token.transferFrom(owner(), address(this), amount);
    }

    function allWithdraw() public onlyOwner {
        require(token.balanceOf(address(this)) > 0);
        token.transfer(owner(), token.balanceOf(address(this)));
    }

    function getBalance() public view returns(uint256) {
        return token.balanceOf(address(this));
    }
}

