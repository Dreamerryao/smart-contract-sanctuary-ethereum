/// @title A NFT Rent Contract
/// @author NoBorderz
/// @notice This smart contract lets users put their NFTs on rent and borrow. 

contract Rent is ReentrancyGuard, IERC721Receiver {


    constructor(address _token){
        token = _token;
    }
    /**********************************************************/
    /******************* State Managment ***********************/
    /**********************************************************/

    /// @notice Address of token which will be used for payment purposes.
    address token;

    /// @notice This struct stores information regarding rented NFTs
    struct Rented {
        uint256 rentInitTime;
        uint256 rentForTime;
        uint256 duration;
        uint256 priceDay;
        address collection;
        uint256 nftTokenId;
        address borrower;
        address owner;
    }

    /// @notice Mapping is public as it does not expose any private data and client end will directly use this.
    mapping(address =>mapping(uint256 => Rented)) public rents;


    /**********************************************************/
    /******************* Public Methods ***********************/
    /**********************************************************/

    /**
     * @dev PUBLIC FACING: Put NFT on Rent.
     * @param _collection Collection Address of NFT
     * @param _nftTokenId Token Id of NFT of above collection address
     * @param _price Price per day of putting the NFT on rent
     * @param _duration Maximum time the renter wants to rent above NFT
    **/

    function rent(address _collection, uint256 _nftTokenId,uint256 _price,uint256 _duration) external nonReentrant {

        //Mandatory checks before putting entry in rented mapping
        require(IERC721(_collection).ownerOf(_nftTokenId) == msg.sender, "Rent: Invalid Owner");
        require(rents[_collection][_nftTokenId].borrower == address(0x0),"Rent: Already Rented");
        require(_price > 0,"Rent: Price Invalid");
        require(_duration>0 && _duration > block.timestamp,"Rent: Duration Invalid");

        //Tranfer NFT from renter to contract
        IERC721(_collection).safeTransferFrom(msg.sender, address(this), _nftTokenId);

        //Putting the entry in mapping for UI usage as well data integrity
        rents[_collection][_nftTokenId] = Rented(0,0,_duration,_price, _collection, _nftTokenId,address(0x0),msg.sender);
    }

    /**
     * @dev PUBLIC FACING: Borrow the NFT.
     * @param _collection Collection Address of NFT
     * @param _nftTokenId Token Id of NFT of above collection address
     * @param _rentForTime Maximum amount of time for which borrower wants to borrow the NFT
    **/
    function borrow(address _collection, uint256 _nftTokenId,uint256 _rentForTime) external nonReentrant {

        //Mandatory checks before letting the user to borrow the NFT
        require(rents[_collection][_nftTokenId].borrower == address(0x0),"Rent: Already Rented");
        require(_rentForTime > 0 && _rentForTime <= rents[_collection][_nftTokenId].duration  ,"Rent: Rent Time invalid");
        require(rents[_collection][_nftTokenId].owner != msg.sender,"Rent: Renter cannot be Borrower");

        //Deducting ERC20 token to pay for the rent and directly tranferring to Renter
        IERC20(token).transferFrom(msg.sender,rents[_collection][_nftTokenId].owner,rents[_collection][_nftTokenId].priceDay*_rentForTime);


        //Setting NFT details for UI usage
        rents[_collection][_nftTokenId].borrower = msg.sender;
        rents[_collection][_nftTokenId].rentForTime = _rentForTime;
        rents[_collection][_nftTokenId].rentInitTime = block.timestamp;

    }

    /**
     * @dev PUBLIC FACING: Claim back the NFT from contract.
     * @param _collection Collection Address of NFT
     * @param _nftTokenId Token Id of NFT of above collection address
    **/
    function claimBack(address _collection, uint256 _nftTokenId) external nonReentrant {

        //Mandatory checks before letting the user to ClaimBack the NFT
        require(msg.sender == rents[_collection][_nftTokenId].owner,"Rent: Unauthorised operation");
        require(block.timestamp > rents[_collection][_nftTokenId].rentInitTime+(rents[_collection][_nftTokenId].rentForTime*86400),"Rent: Borrower Time still remains");

        /*rents[_collection][_nftTokenId].borrower = address(0x0);
        rents[_collection][_nftTokenId].rentInitTime = 0;
        rents[_collection][_nftTokenId].rentForTime = 0;*/

        //Checking Approval
        IERC721(_collection).approve(msg.sender,_nftTokenId);

        //Sending the ownership of respective NFT from contract to original owner ( renter )
        IERC721(_collection).safeTransferFrom(address(this),msg.sender, _nftTokenId);
        
        //Removing entry from mapping
        delete rents[_collection][_nftTokenId];

    }

    function onERC721Received(address, address, uint256, bytes memory) public virtual override returns (bytes4) {
        return this.onERC721Received.selector;
    }
}