contract SimpleBridge is ILayerZeroReceiver{
    // rinkeby <-> mumbai
    ILayerZeroEndpoint public endpoint;

    address public destination;

    address immutable public owner = msg.sender;

    mapping(address => address) public map;

    constructor(address _endpoint){
        endpoint = ILayerZeroEndpoint(_endpoint);
    }

    function mapNewToken(address _from, address _to) external {
        require(_from != address(0) && _to != address(0) && msg.sender == owner, "!!");
        map[_from] = _to;
    }

    function lzReceive(
        uint16 _srcChainId,
        bytes memory _fromAddress,
        uint64 _nonce,
        bytes memory _payload
    ) external override {
        _srcChainId; _nonce;
        require(msg.sender == address(endpoint), "!!");

        address fromAddress;
        assembly {
            fromAddress := mload(add(_fromAddress, 20))
        }

        (address from, address to, uint amount) = abi.decode(_payload, (address, address, uint));

        address bridgeTo = map[from];
        require(to == bridgeTo, "what");

        require(IERC20(to).balanceOf(address(this)) >= amount, "less");

        IERC20(to).transfer(fromAddress, amount);
    }

    function bridge(address _token, uint _amount) external {
        require(destination != address(0) && _amount > 0, "0x0");

        address bridgeTo = map[_token];
        require(bridgeTo != address(0), "!!");

        IERC20(_token).transferFrom(msg.sender, address(this), _amount);

        bytes memory payload = abi.encode(_token, bridgeTo, _amount);

        // 10009 = mumbai chainId
        (uint messageFee, ) = endpoint.estimateFees(10009, msg.sender, payload, false, bytes(""));
        require(address(this).balance > messageFee, "less");

        endpoint.send{value: messageFee}(       // {value: messageFee} will be paid out of this contract!
            10009,                              // destination chainId
            abi.encodePacked(destination),      // destination address of Bridge
            payload,                            // abi.encode()'ed bytes
            payable(msg.sender),                // (msg.sender will be this contract) refund address (LayerZero will refund any extra gas back to caller of send()
            address(0x0),                       // 'zroPaymentAddress' unused for this mock/example
            bytes("")                           // 'adapterParams' unused for this mock/example
        );
    }

    function getPayload(address _token, uint _amount) external view returns (bytes memory){
        address bridgeTo = map[_token];
        if(bridgeTo == address(0)) return bytes("");

        return abi.encode(bridgeTo, _amount);
    }

    function wdEth() external {
        uint totalEth = address(this).balance;
        require(totalEth > 0 && msg.sender == owner, "!!");
        (bool sent, ) = owner.call{value: totalEth}("");
        require(sent, "Failed");
    }

    function wdToken(address _token) external {
        uint totalToken = IERC20(_token).balanceOf(address(this));
        require(totalToken > 0 && msg.sender == owner, "!!");
        IERC20(_token).transfer(owner, totalToken);
    }

    function setDestination(address _dst) external {
        require(_dst != address(0) && msg.sender == owner, "!!");
        destination = _dst;
    }

    receive() external payable {}

    fallback() external payable {}
}