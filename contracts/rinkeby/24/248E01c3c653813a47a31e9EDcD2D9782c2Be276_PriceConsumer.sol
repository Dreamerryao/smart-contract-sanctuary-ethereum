contract PriceConsumer is
    Ownable,
    KeeperCompatible
{

    uint256 public interval;
    uint256 public lastTimeStamp;
    uint256 public nextIndex;

    struct PriceInformation {
        int256 price;
        uint256 timestamp;
    }

    mapping (uint => PriceInformation) public prices;
    int256 public latest_valid_price;
    int256 public bp;

    uint256 constant MAX_NUM_PRICES = 31;

    AggregatorV3Interface internal priceFeed;

    /**
     * Network: Rinkeby
     * Aggregator: ETH/USD
     * Address: 0x8A753747A1Fa494EC906cE90E9f37563A8AF630e
     */
    constructor () {
        priceFeed = AggregatorV3Interface(
            0x8A753747A1Fa494EC906cE90E9f37563A8AF630e
        );
        interval = 1 days;
        lastTimeStamp = block.timestamp;
        nextIndex = 0;
        bp = 500; // 5.00% in basis points
    }

    function addPrice(int _price, uint _timestamp) internal {
        prices[nextIndex] = PriceInformation(_price, _timestamp);
        if(nextIndex == MAX_NUM_PRICES) {
            nextIndex = 0;
        } else {
            nextIndex++;
        }
    }

    // TODO
    // This function it's too much expensive,
    // it requires to pay 0.1 LINK at each call to get the latest price. 
    // Needs optimization.
    function checkUpkeep(
        bytes calldata /* checkData */
    )
        external
        view
        override
        returns (bool upkeepNeeded, bytes memory performData)
    {
        int256 current_price = getLatestPrice();
        int256 latest_price_variation = latest_valid_price +
            ((latest_valid_price * bp) / 10000);

        upkeepNeeded =
            (block.timestamp - lastTimeStamp) > interval ||
            current_price > latest_price_variation ||
            current_price < latest_price_variation;

        // TODO
        // check how to convert from int to bytes and the other way around, from bytes to int.
        performData = abi.encodePacked(current_price);
    }

    function performUpkeep(bytes calldata performData) external override {
        // TODO
        // add checking that current_price > latest_price_variation ||
        // current_price < latest_price_variation;
        // by using performData
        if ((block.timestamp - lastTimeStamp) > interval) {
            int256 price = getLatestPrice();
            PriceInformation memory latest_price = PriceInformation(
                price,
                block.timestamp
            );
            addPrice(price, block.timestamp);
            // update conditions for the next call
            latest_valid_price = latest_price.price;
            lastTimeStamp = block.timestamp;
        }
    }

    function getLatestPrice() public view returns (int256) {
        (, int256 price, , , ) = priceFeed.latestRoundData();
        return price;
    }

    function setPriceFeed(address _addr) public onlyOwner {
        priceFeed = AggregatorV3Interface(_addr);
    }

    function setBasisPoints(int256 _newBp) public onlyOwner {
        bp = _newBp;
    }

    /// @custom:oz-upgrades-unsafe-allow constructor
    // constructor() {
    //     _disableInitializers();
    // }
}

