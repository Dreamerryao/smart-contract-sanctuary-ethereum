        bytes32 salt = keccak256(abi.encode(userId));
        address cloneAddress = logicWalletAddress.predictDeterministicAddress(salt);
        NiioWallet niioWalletInstance = NiioWallet(payable(cloneAddress));
        if (!_isContract(cloneAddress)) {
            logicWalletAddress.cloneDeterministic(salt);
            niioWalletInstance.initialize(registry);
            created = true;
