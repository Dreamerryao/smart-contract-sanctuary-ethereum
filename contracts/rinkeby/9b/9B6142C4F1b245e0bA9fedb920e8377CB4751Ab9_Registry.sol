    modifier onlyNiioAdmin() {
        require(registry.getAdmin() == msg.sender, "Caller is not niio-admin");
        _;
    }


    /**
     * @notice Creates a new minimal proxy contract, basically a clone of the `logicWallet`.
     * @dev If the contract had already been created, the emitted event is fired with a `created` = false,
     * else with the value of true.
