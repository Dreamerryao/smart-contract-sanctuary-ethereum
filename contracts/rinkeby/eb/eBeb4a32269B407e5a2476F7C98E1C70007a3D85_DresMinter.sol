pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";

import "./IDresMinter.sol";
import "./IDresNFT.sol";

contract DresMinter is Ownable, ReentrancyGuard, IDresMinter {
    address public DRES_NFT;

    MintRound[] public rounds;

    uint256 public currentRoundId;

    mapping(uint256 => MintRoundStatus) public roundStatus;

    mapping(uint256 => mapping(address => bool)) public participants;

    function addMintRound(
        uint256 _mintFee,
        uint256 _startTime,
        uint256 _endTime,
        bytes32 _merkleRoot
    ) external onlyOwner {
        require(_startTime > block.timestamp, "Invalid start time");
        require(_endTime > _startTime, "Invalid end time");

        rounds.push(MintRound(_mintFee, _startTime, _endTime, _merkleRoot));
        emit NewMintRound(
            currentRoundId,
            _mintFee,
            _startTime,
            _endTime,
            _merkleRoot
        );

        currentRoundId++;
    }

    function mint(bytes32[] memory _proofs, uint256 _roundId)
        external
        payable
        nonReentrant
    {
        require(_roundId < currentRoundId, "Invalid roundId");

        MintRound storage round = rounds[_roundId];
        require(
            round.startTime <= block.timestamp,
            "Minting is not started yet"
        );
        require(round.endTime >= block.timestamp, "Minting is ended");
        require(msg.value == round.mintFee, "Invalid mint fee");
        require(!participants[_roundId][_msgSender()], "Already participated");
        if (round.merkleRoot != bytes32(0)) {
            require(
                MerkleProof.verify(
                    _proofs,
                    round.merkleRoot,
                    keccak256(abi.encodePacked(_msgSender()))
                ),
                "Caller is not whitelisted"
            );
        }

        getDresNFT().mint(_msgSender(), 1);
        participants[_roundId][_msgSender()] = true;
    }

    function setDresNFT(address _dresNFT) external onlyOwner {
        DRES_NFT = _dresNFT;
    }

    function getDresNFT() public view returns (IDresNFT) {
        return IDresNFT(DRES_NFT);
    }
}

