    @dev Mintable form of ERC1155
    Shows how easy it is to mint new items.
*/
contract ERC1155Mintable is ERC1155, ERC2981Base {

    bytes4 constant private INTERFACE_SIGNATURE_URI = 0xd9b67a26;
    bytes4 constant private INTERFACE_SIGNATURE_ERC1155 = 0xd9b67a26;

    using SafeMath for uint256;
    using Address for address;

    RoyaltyInfo private _royalties;

    // A nonce to ensure we have a unique id each time we mint.
    uint256 public nonce;
    uint256 public nonceLimit = 11;

    address public DanielleWeberArtist = address(0x6d2BF01b9FB2B41DD6BEAb8A0aCc8D249666639b);
    address public CollingsNFTWallet = address(0x615973cb8fc741C72D013EDc1BbD79a5d5fe0a06);

    // 0x6d2BF01b9FB2B41DD6BEAb8A0aCc8D249666639b, 0x615973cb8fc741C72D013EDc1BbD79a5d5fe0a06, 0x47aE4F27caf7365c661beE40a37D001cdcA0a55a, 0xD9e446aED595ceEda7f0B9f787d2262F9DbD1067, 0x0F700761410d52F7a920297d31dDe07A4363F24b, 0x930414e21A9c269380D1A39B7Be469717B3dE6F1, 0xf14eC31C9Db1D2c2e52e613B3431e6b3230d43Bd, 0xacB416378EA19f678A733c679234D482e65Cf034

    // 0x5B38Da6a701c568545dCfcB03FcB875f56beddC4, 0xAb8483F64d9C6d1EcF9b849Ae677dD3315835cb2, 0x4B20993Bc481177ec7E8f571ceCaE8A9e22C02db, 0x78731D3Ca6b7E34aC0F824c42a7cC18A495cabaB, 0x617F2E2fD72FD9D5503197092aC168c91465E7f2, 0x17F6AD8Ef982297579C203069C1DbfFE4348c372, 0x5c6B0f7Bf3E7ce046039Bd8FABdfD3f9F5021678, 0x03C6FcED478cBbC9a4FAB34eF9f40767739D1Ff7

    address public freeMinter1;
    address public freeMinter2;
    address public freeMinter3;
    address public freeMinter4;
    address public freeMinter5;
    address public freeMinter6;

    uint256 public danielleWeberArtistQuantity = 7;
    uint256 public collingsNFTWalletQuantity = 1;

    uint256 public royalty = 10;
    uint256 public daniellDistribution = 85;
    uint256 public collingsDistribution = 15;

    // id => creators
    mapping (uint256 => address) public creators;
    mapping (address => uint256) public freeCreators;

    modifier checkCreateLimit() {
        require(nonce < nonceLimit, "Total NFT must be 11 only");
        _;
    }

    modifier creatorOnly(uint256 _id) {
        require(creators[_id] == msg.sender, "Must be the NFT owner");
        _;
    }

    modifier createdNFTOnly(uint256 _id) {
        require(creators[_id] != address(0), "NFT must be created first");
        _;
    }

    constructor(address _freeMintersAddress1, address _freeMintersAddress2, address _freeMintersAddress3, address _freeMintersAddress4, address _freeMintersAddress5, address _freeMintersAddress6) {
        freeMinter1 = _freeMintersAddress1;
        freeMinter2 = _freeMintersAddress2;
        freeMinter3 = _freeMintersAddress3;
        freeMinter4 = _freeMintersAddress4;
        freeMinter5 = _freeMintersAddress5;
        freeMinter6 = _freeMintersAddress6;

        freeCreators[_freeMintersAddress1] = 1;
        freeCreators[_freeMintersAddress2] = 1;
        freeCreators[_freeMintersAddress3] = 1;
        freeCreators[_freeMintersAddress4] = 1;
        freeCreators[_freeMintersAddress5] = 1;
        freeCreators[_freeMintersAddress6] = 1;

        freeCreators[DanielleWeberArtist] = danielleWeberArtistQuantity;
        freeCreators[CollingsNFTWallet] = collingsNFTWalletQuantity;

        // _setRoyalties(DanielleWeberArtist , 1000);
        // _setRoyalties(CollingsNFTWallet , 1000);
    }

    function supportsInterface(bytes4 _interfaceId)
    public
    override(ERC1155, ERC2981Base)
    view
    returns (bool) {
        if (INTERFACE_SIGNATURE_ERC1155 == INTERFACE_SIGNATURE_URI) {
            return true;
        } else {
            return super.supportsInterface(_interfaceId);
        }
    }

    // Value is in basis points so 10000 = 100% , 100 = 1% etc
    function _setRoyalties(address recipient, uint256 value) internal {
        require(value <= 10000, "ERC2981Royalties: Too high");
        _royalties = RoyaltyInfo(recipient, uint24(value));
    }

    // Creates a new token type and assings _initialSupply to minter
    function create(string calldata _uri) external checkCreateLimit() returns(uint256 _id) {
        _id = ++nonce;
        creators[_id] = msg.sender;
        uint256 _initialSupply = 1;

        // Transfer event with mint semantic
        emit TransferSingle(msg.sender, address(0x0), msg.sender, _id, _initialSupply);

        if (bytes(_uri).length > 0)
            emit URI(_uri, _id);
    }

    function mint(uint256 _id) createdNFTOnly(_id) external payable {

        if(checkOwnerTotalMintedNFT(msg.sender) < freeCreators[msg.sender]){
            assignNFTInMint(_id, msg.sender);
        } else {
            require(msg.value >= 0.22 ether, "Ether amount must be 0.22");

            (bool success1, ) = DanielleWeberArtist.call{value: 0.187 ether}("");

            require(success1, "Daniell transfer failed");
            
            (bool success2, ) = CollingsNFTWallet.call{value: 0.033 ether}("");

            require(success2, "Collings transfer failed");

            (bool success3, ) = address(this).call{value:  0.78 ether}("");

            require(success3, "Contract transfer failed");

            assignNFTInMint(_id, msg.sender);
        }

    }

    function setURI(string calldata _uri, uint256 _id) external creatorOnly(_id) {
        emit URI(_uri, _id);
    }

    function assignNFTInMint(uint256 _id, address _to) internal {
            uint256 quantity = 1;

            // Grant the items to the caller
            balances[_id][_to] = quantity.add(balances[_id][_to]);

            // Emit the Transfer/Mint event.
            // the 0x0 source address implies a mint
            // It will also provide the circulating supply info.
            emit TransferSingle(_to, address(0x0), _to, _id, quantity);

            if (_to.isContract()) {
                _doSafeTransferAcceptanceCheck(_to, _to, _to, _id, quantity, '');
            }
    }

    function royaltyInfo(uint256, uint256 value)
        external
        view
        override
        returns (address receiver, uint256 royaltyAmount)
    {
        RoyaltyInfo memory royalties = _royalties;
        receiver = royalties.recipient;
        royaltyAmount = (value * royalties.amount) / 10000;
    }

    function checkOwnerTotalMintedNFT(address _user) view public returns(uint256 _count){
        for (uint256 i = 1; i <= nonce; i++) {
            _count += balances[i][_user];
        }
        _count;
    }

    fallback() external payable {}
}

