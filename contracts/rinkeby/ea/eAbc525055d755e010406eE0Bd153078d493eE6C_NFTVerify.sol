pragma solidity ^0.8.0;

import "@openzeppelin/contracts/utils/Strings.sol";
import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";

contract NFTVerify {
    bytes32 public merkleRoot;

    mapping(address => bool) public userMap;

    function setRoot(bytes32 _root) public {
        merkleRoot = _root;
    }

    function verify(uint amount, bytes32[] calldata merkleProof) external returns(bool) {
        bytes32 leaf = keccak256(abi.encodePacked(msg.sender, amount));

        require(!userMap[msg.sender], "already bought");
        require(MerkleProof.verify(merkleProof, merkleRoot, leaf), "bad permission");
        userMap[msg.sender] = true;
        return true;
    }
}

