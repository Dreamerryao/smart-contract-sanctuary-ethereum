contract OlyPrincipleDepository is IPrincipleDepository, Ownable {

  using SafeERC20 for IERC20;
  using SafeMath for uint;

  struct BondTerm {
    uint256 bondScalingFactor;
    uint256 bondingPeriodInBlocks;
  }

  struct DepositInfo {
    uint256 principleAmount;
    uint256 interestDue;
    uint256 bondMaturationBlock;
  }

  BondTerm public override getCurrentBondTerm;

  address public override treasury;

  address public override getBondCalculator;

  mapping( address => bool ) public override isPrincipleToken;

  mapping( address => DepositInfo ) public override getDepositorInfoForDepositor;

  modifier onlyPrincipleToken( address principleTokenChallenge_ ) {
    require( isPrincipleToken[principleTokenChallenge_], "OlyPrincipleDepository:: Not a registered principle token" );
    _;
  }

  function addPrincipleToken( address newPrincipleToken_ ) external override onlyOwner() returns ( bool ) {
    isPrincipleToken[newPrincipleToken_] = true;
    return true;
  }

  function setTreasury( address newTreasury_ ) external override onlyOwner() returns ( bool ) {
    require( treasury == address(0), "OlyPrincipleDepository:: Treasury already set." );
    treasury = newTreasury_;
    return true;
  }

  function addBondTerm(
    address bondPrincipleToken_,
    uint256 bondScalingFactor_,
    uint256 bondingPeriodInBlocks_
  )
    external override
    onlyOwner()
    onlyPrincipleToken( bondPrincipleToken_ )
    returns ( bool )
  {
    getBondCalculator = ITreasury( treasury ).getBondingCalculator();
    getCurrentBondTerm = BondTerm(
      {
        bondScalingFactor: bondScalingFactor_,
        bondingPeriodInBlocks: bondingPeriodInBlocks_
      }
    );
    return true;
  }

  function getDepositorInfo( address depositorAddress_) external view override returns ( uint principleAmount_, uint interestDue_, uint bondMaturationBlock_) {
    DepositInfo memory depositorInfoToReturn = getDepositorInfoForDepositor[depositorAddress_];
    principleAmount_ = depositorInfoToReturn.principleAmount;
    interestDue_ = depositorInfoToReturn.interestDue;
    bondMaturationBlock_ = depositorInfoToReturn.bondMaturationBlock;
  }

  function _depositBondPrinciple(
    address bondPrincipleTokenToDeposit_,
    uint256 amountToDeposit_
  ) 
    internal
  {
    IERC20(bondPrincipleTokenToDeposit_).safeTransferFrom(
      msg.sender,
      address(this),
      amountToDeposit_
    );

    BondTerm memory currentBondTerm_ = getCurrentBondTerm;

    DepositInfo memory currentDepositorInfo_ = getDepositorInfoForDepositor[msg.sender];

    uint totalDeposit = currentDepositorInfo_.principleAmount.add(amountToDeposit_);

    uint totalInterestDue_ = IBondingCalculator( getBondCalculator )
          .calculateBondInterest(
            treasury,
            bondPrincipleTokenToDeposit_,
            totalDeposit,
            currentBondTerm_.bondScalingFactor
          );

    getDepositorInfoForDepositor[msg.sender] = DepositInfo(
      {
        principleAmount: totalDeposit,
        interestDue: totalInterestDue_,
        bondMaturationBlock: block.number.add( currentBondTerm_.bondingPeriodInBlocks )
      }
    );
  }

  function depositBondPrinciple(
    address bondPrincipleTokenToDeposit_,
    uint256 amountToDeposit_
  ) 
    external
    override
    onlyPrincipleToken( bondPrincipleTokenToDeposit_ )
    returns ( bool )
  {
    _depositBondPrinciple( bondPrincipleTokenToDeposit_, amountToDeposit_ ) ;
    return true;
  }

  function depositBondPrincipleWithPermit(
    address bondPrincipleTokenToDeposit_,
    uint256 amountToDeposit_,
    uint256 deadline, uint8 v, bytes32 r, bytes32 s 
  ) 
    external
    override
    onlyPrincipleToken( bondPrincipleTokenToDeposit_ )
    returns ( bool )
  {
    IERC2612Permit( bondPrincipleTokenToDeposit_ ).permit( msg.sender, address(this), amountToDeposit_, deadline, v, r, s );
    _depositBondPrinciple( bondPrincipleTokenToDeposit_, amountToDeposit_ ) ;
    return true;
  }

  function withdrawPrincipleAndForfeitInterest( address bondPrincipleToWithdraw_ ) external override onlyPrincipleToken( bondPrincipleToWithdraw_ ) returns ( bool ) {
    uint256 principleAmountToWithdraw_ = getDepositorInfoForDepositor[msg.sender].principleAmount;
    require( principleAmountToWithdraw_ > 0, "user has no principle amount to withdraw" );

    delete getDepositorInfoForDepositor[msg.sender];

    IERC20(bondPrincipleToWithdraw_).safeTransfer( msg.sender, principleAmountToWithdraw_ );
    return true;
  }
  function redeemBond(address bondPrincipleToRedeem_ ) external override onlyPrincipleToken( bondPrincipleToRedeem_ ) returns ( bool ) {
    DepositInfo storage depositInfoToRedeem_ = getDepositorInfoForDepositor[msg.sender];

    delete getDepositorInfoForDepositor[msg.sender];

    uint256 pendingInterestDue_ = depositInfoToRedeem_.interestDue;
    uint256 pendingBondkMaturationBlock_ = depositInfoToRedeem_.bondMaturationBlock;
    uint256 pendingPrincipleAmount_ = depositInfoToRedeem_.principleAmount;

    require( pendingInterestDue_ > 0, "OlyUniV2CompatiableLPTokenBonding: Message Sender is not due any interest." );
    require( pendingBondkMaturationBlock_ < block.number, "OlyUniV2CompatiableLPTokenBonding: Bond has not matured." );

    IUniswapV2ERC20(bondPrincipleToRedeem_).approve( address( treasury ), pendingPrincipleAmount_ );

    // TODO verify treasury needs
    ITreasury( treasury ).payDebt( msg.sender );

    return true;
  }
