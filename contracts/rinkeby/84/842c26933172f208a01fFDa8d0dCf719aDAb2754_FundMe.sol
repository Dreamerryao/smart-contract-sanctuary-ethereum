pragma solidity ^0.8.0;

import "./PriceConverter.sol";

contract FundMe {
    using PriceConverter for uint256;

    uint256 public constant MIN_USD = 50 * 1e18; //convert ot 18 base

    address[] public funders;
    mapping(address => uint256) public addressToAmountFunded;

    address public owner;
    AggregatorV3Interface public priceFeed;

    constructor(address priceFeedAddress) {
        owner = msg.sender;
        priceFeed = AggregatorV3Interface(priceFeedAddress);
    }

    function fund() public payable {
        // require(msg.sender == owner, "Not owner!");
        // We will set min amount in USD
        require(
            msg.value.getConversionRate(priceFeed) >= MIN_USD,
            "Didn't send enough!"
        );
        funders.push(msg.sender);
        addressToAmountFunded[msg.sender] += msg.value;
    }

    function withdraw() public onlyOwner {
        for (
            uint256 funderIndex = 0;
            funderIndex < funders.length;
            funderIndex++
        ) {
            address funder = funders[funderIndex];
            addressToAmountFunded[funder] = 0;
        }

        // reset array
        funders = new address[](0);

        // transfer, send, call

        // payable(msg.sender.transfer(address(this).balance)); // transfer will proceed and revert automatically if it's fail

        // bool sendSuccess = payable(msg.sender).send(address(this).balance); // need require to revert transaction, because it only return true false
        // require(sendSuccess, "send failed");

        (bool callSuccess, ) = payable(msg.sender).call{
            value: address(this).balance
        }("");
        require(callSuccess, "call failed");
    }

    // function withdraw() {}

    modifier onlyOwner() {
        require(msg.sender == owner, "Not owner!");
        _; // do the rest of the code, can be placed on top or bottom depends on code structured
    }

    receive() external payable {
        fund();
    }

    fallback() external payable {
        fund();
    }
}

