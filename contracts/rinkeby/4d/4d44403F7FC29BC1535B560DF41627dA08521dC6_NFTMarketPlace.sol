import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/utils/Strings.sol";

contract NFTMarketPlace {
    uint decimals = 18;

    using Counters for Counters.Counter;
    Counters.Counter public itemIds;

    address payable public marketOwner;
    uint public marketSharePercentage;
    uint public uploadingCharge = 0.001 ether;

    struct Item {
        uint itemId;
        IERC721 nft;
        uint tokenId;
        uint price;
        address payable owner;
    }

    mapping(uint => Item) public itemId_to_Item;

    constructor(uint8 _marketSharePercentage) {
        marketOwner = payable(msg.sender);
        marketSharePercentage = 10 ** decimals / 100 * _marketSharePercentage;
    }

    function uploadItem(IERC721 _nft, uint _price, uint _tokenId) 
        external 
        payable
        minimumPrice(_price)
        returns(uint) 
    {
        require(
            msg.value >= uploadingCharge, 
            "We charge an uploading fee of 0.001 ether. Please provide the amount."
        );
        _nft.transferFrom(msg.sender, address(this), _tokenId);
        itemIds.increment();
        uint itemId = itemIds.current();

        itemId_to_Item[itemId] = Item(
            itemId,
            _nft,
            _tokenId,
            _price,
            payable(msg.sender)
        );

        return itemId;
    }

    function updatePrice(uint _itemId, uint _newPrice) 
        public
        validItemId(_itemId) 
    {
        Item storage item = itemId_to_Item[_itemId];
        require(item.owner == msg.sender, "You don\'t own this NFT");
        item.price = _newPrice;
    }

    function totalPrice(uint _itemId)
        public 
        validItemId(_itemId) 
        view 
        returns(uint) 
    {
        Item storage item = itemId_to_Item[_itemId];
        return item.price + marketSharePercentage * item.price / 10 ** decimals;
    }

    function buyItem(uint _itemId) external payable {
        uint256 sellingPrice = totalPrice(_itemId);
        require(
            msg.value >= sellingPrice, 
            "Insufficient funds to buy. Please check the selling price and try again."
        );
        Item storage item = itemId_to_Item[_itemId];
        item.owner.transfer(itemId_to_Item[_itemId].price);
        marketOwner.transfer(msg.value - itemId_to_Item[_itemId].price);
        item.nft.transferFrom(address(this), msg.sender, item.tokenId);

        item.owner = payable(msg.sender);
    }

    modifier minimumPrice(uint256 _price) {
        require(_price > 0, "Price for the item should be a positive number");
        _;
    }

    modifier validItemId(uint _itemId) {
        require(_itemId <= itemIds.current(), "Invalid item Id. Item doesn't exist.");
        _;
    }
}