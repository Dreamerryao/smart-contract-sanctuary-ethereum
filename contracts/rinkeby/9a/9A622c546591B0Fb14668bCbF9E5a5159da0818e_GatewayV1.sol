pragma solidity ^0.8.9;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";

import "./libraries/BytesLib.sol";

import "./GatewayGetters.sol";
import "./GatewayInitializer.sol";
import "./GatewayMessageParser.sol";
import "./GatewayPayloadParser.sol";
import "./GatewaySetters.sol";
import "./GatewayStructs.sol";

import "./token/TokenV1.sol";

contract GatewayV1 is
    GatewayGetters,
    GatewaySetters,
    GatewayMessageParser,
    GatewayPayloadParser,
    GatewayInitializer
{
    using BytesLib for bytes;

    event RegisterGateway(
        bytes32 originNetChainId,
        bytes32 gatewayContractAddress,
        bytes32 messageHash
    );

    event UpdateSigners(address[] signers);

    event RegisterAsset(
        uint8 isWrapped,
        bytes32 netChainId,
        bytes32 originTokenContract,
        address tokenContract
    );

    event CreateAndRegisterWrapped(
        bytes32 originNetChainId,
        bytes32 originTokenContract,
        address wrappedContract
    );

    event RegisterWrapped(
        bytes32 originNetChainId,
        bytes32 originTokenContract,
        address wrappedContract
    );

    event Wrap(
        bytes32 originNetChainId,
        bytes32 targetNetChainId,
        address tokenContract,
        string recipient,
        uint256 amount,
        uint256 fee,
        address sender
    );

    event Unwrap(
        bytes32 originNetChainId,
        bytes32 originTxHash,
        address tokenContract,
        uint256 amount,
        address recipient
    );

    function registerGateway(bytes calldata message) external {
        (
            GatewayStructs.ParsedMessage memory parsedMessage,
            bool ok,
            string memory err
        ) = _parseAndVerifyMessage(message);
        require(ok, err);

        GatewayStructs.RegisterGatewayPayload
            memory payload = _parseRegisterGatewayPayload(
                parsedMessage.payload
            );

        require(
            payload.targetNetChainId == netChainId(),
            "GatewayV1: invalid target chain"
        );

        setGatewayContract(payload.netChainId, payload.gatewayContractAddress);
        setUsed(parsedMessage.messageHash);

        emit RegisterGateway(
            payload.netChainId,
            payload.gatewayContractAddress,
            parsedMessage.messageHash
        );
    }

    function registerAsset(bytes calldata message) external {
        (
            GatewayStructs.ParsedMessage memory parsedMessage,
            bool ok,
            string memory err
        ) = _parseAndVerifyMessage(message);
        require(ok, err);

        GatewayStructs.RegisterAssetPayload
            memory payload = _parseRegisterAssetPayload(parsedMessage.payload);

        require(
            payload.targetNetChainId == netChainId(),
            "GatewayV1: invalid target chain"
        );

        if (payload.isWrapped == 1) {
            setIsWrapped(payload.tokenContract);
        }
        setWrappedAsset(
            payload.netChainId,
            payload.originTokenContract,
            payload.tokenContract
        );
        setUsed(parsedMessage.messageHash);

        emit RegisterAsset(
            payload.isWrapped,
            payload.netChainId,
            payload.originTokenContract,
            payload.tokenContract
        );
    }

    function createAndRegisterWrappedAsset(bytes calldata message)
        external
        returns (address wrapped)
    {
        (
            GatewayStructs.ParsedMessage memory parsedMessage,
            bool ok,
            string memory err
        ) = _parseAndVerifyMessage(message);
        require(ok, err);

        GatewayStructs.CreateAndRegisterWrappedAssetPayload
            memory payload = _parseCreateAndRegisterWrappedAssetPayload(
                parsedMessage.payload
            );

        require(
            payload.targetNetChainId == netChainId(),
            "GatewayV1: invalid target chain"
        );

        TokenV1 _wrapped = new TokenV1(
            string(abi.encodePacked(payload.tokenName)),
            string(abi.encodePacked(payload.tokenSymbol))
        );

        wrapped = address(_wrapped);

        setWrappedAsset(
            payload.originNetChainId,
            payload.originTokenContract,
            wrapped
        );
        setIsWrapped(wrapped);
        setUsed(parsedMessage.messageHash);

        emit CreateAndRegisterWrapped(
            payload.originNetChainId,
            payload.originTokenContract,
            wrapped
        );
        return wrapped;
    }

    function updateSigners(bytes calldata message) external {
        (
            GatewayStructs.ParsedMessage memory parsedMessage,
            bool ok,
            string memory err
        ) = _parseAndVerifyMessage(message);
        require(ok, err);

        GatewayStructs.UpdateSignersPayload
            memory payload = _parseUpdateSignersPayload(parsedMessage.payload);

        require(
            payload.targetNetChainId == netChainId(),
            "GatewayV1: invalid target chain"
        );

        setSigners(payload.signers);
        setUsed(parsedMessage.messageHash);

        emit UpdateSigners(payload.signers);
    }

    /*
     *  @notice Send ERC20 token through portal.
     */
    function wrap(
        address token,
        uint256 amount,
        bytes32 targetNetChainId,
        string memory recipient
    ) public payable nonReentrant {
        uint256 fee = signerFee();
        uint256 normalizedAmount;
        uint256 normalizedFee;

        if (token == coin()) {
            (normalizedAmount, normalizedFee) = _transferCoin(fee);
        } else {
            (normalizedAmount, normalizedFee) = _transferTokens(
                token,
                amount,
                fee
            );
        }

        emit Wrap(
            netChainId(),
            targetNetChainId,
            address(token),
            recipient,
            normalizedAmount,
            normalizedFee,
            msg.sender
        );
    }

    /*
     *  @notice Initiate a transfer
     */
    function _transferTokens(
        address token,
        uint256 amount,
        uint256 fee
    ) internal returns (uint256 normalizedAmount, uint256 normalizedFee) {
        // determine token parameters
        bytes32 tokenChain;
        if (isWrapped(token)) {
            tokenChain = originNetChainId(token);
        } else {
            tokenChain = netChainId();
        }

        // query tokens decimals
        (, bytes memory queriedDecimals) = token.staticcall(
            abi.encodeWithSignature("decimals()")
        );
        uint8 decimals = abi.decode(queriedDecimals, (uint8));

        // don't deposit dust that can not be bridged due to the decimal shift
        amount = deNormalizeAmount(normalizeAmount(amount, decimals), decimals);

        if (tokenChain == netChainId()) {
            // query own token balance before transfer
            (, bytes memory queriedBalanceBefore) = token.staticcall(
                abi.encodeWithSelector(IERC20.balanceOf.selector, address(this))
            );
            uint256 balanceBefore = abi.decode(queriedBalanceBefore, (uint256));

            // transfer tokens
            TokenV1(token).transferFrom(msg.sender, address(this), amount);

            // query own token balance after transfer
            (, bytes memory queriedBalanceAfter) = token.staticcall(
                abi.encodeWithSelector(IERC20.balanceOf.selector, address(this))
            );
            uint256 balanceAfter = abi.decode(queriedBalanceAfter, (uint256));

            // correct amount for potential transfer fees
            amount = balanceAfter - balanceBefore;
        } else {
            TokenV1(token).transferFrom(msg.sender, address(this), amount);
            TokenV1(token).burn(amount);
        }

        // normalize amounts decimals
        normalizedAmount = amount;
        normalizedFee = fee;

        // track and check outstanding token amounts
        if (tokenChain == netChainId()) {
            addLockedAmount(token, normalizedAmount);
        }
        return (normalizedAmount, normalizedFee);
    }

    function _transferCoin(uint256 fee)
        internal
        returns (uint256 normalizedAmount, uint256 normalizedFee)
    {
        require(fee < msg.value, "GatewayV1: insufficient value");

        uint256 amount = msg.value - fee;
        // normalize amounts decimals
        normalizedAmount = amount;
        normalizedFee = fee;

        addLockedAmount(coin(), amount);
        return (normalizedAmount, normalizedFee);
    }

    function unwrap(bytes calldata message) external whenNotPaused {
        (
            GatewayStructs.ParsedMessage memory parsedMessage,
            bool ok,
            string memory err
        ) = _parseAndVerifyMessage(message);
        require(ok, err);

        GatewayStructs.UnwrapPayload memory payload = _parseUnwrapPayload(
            parsedMessage.payload
        );

        require(
            gatewayContract(payload.originNetChainId) ==
                payload.originGatewayContract,
            "GatewayV1: gateway contract is invalid"
        );

        require(
            payload.targetNetChainId == netChainId(),
            "GatewayV1: invalid target chain"
        );

        address wrapped = wrappedAsset(
            payload.originNetChainId,
            payload.originTokenContract
        );

        require(
            wrapped != address(0),
            "GatewayV1: no wrapped token registered"
        );

        address recipient = address(uint160(uint256(payload.recipient)));

        setUsed(parsedMessage.messageHash);

        if (isWrapped(wrapped)) {
            // mint wrapped token
            TokenV1(wrapped).mint(recipient, payload.amount);
        } else {
            require(
                lockedAmount(wrapped) >= payload.amount,
                "GatewayV1: insufficient locked amount"
            );
            if (wrapped == coin()) {
                payable(recipient).transfer(payload.amount);
            } else {
                // transfer native token
                IERC20(wrapped).transfer(recipient, payload.amount);
            }
            subLockedAmount(wrapped, payload.amount);
        }

        emit Unwrap(
            payload.originNetChainId,
            payload.originTxHash,
            wrapped,
            payload.amount,
            recipient
        );
    }

    function addLockedAmount(address tokenContract, uint256 amount) internal {
        uint256 beforeAmount = lockedAmount(tokenContract);
        setLockedAmount(tokenContract, beforeAmount + amount);
    }

    function subLockedAmount(address tokenContract, uint256 amount) internal {
        uint256 beforeAmount = lockedAmount(tokenContract);
        setLockedAmount(tokenContract, beforeAmount - amount);
    }

    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }

    function normalizeAmount(uint256 amount, uint8 decimals)
        internal
        pure
        returns (uint256)
    {
        if (decimals > 8) {
            amount /= 10**(decimals - 8);
        }
        return amount;
    }

    function deNormalizeAmount(uint256 amount, uint8 decimals)
        internal
        pure
        returns (uint256)
    {
        if (decimals > 8) {
            amount *= 10**(decimals - 8);
        }
        return amount;
    }

    receive() external payable {}
}

