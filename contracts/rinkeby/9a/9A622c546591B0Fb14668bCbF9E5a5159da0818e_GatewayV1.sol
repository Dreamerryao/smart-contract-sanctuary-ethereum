pragma solidity ^0.8.9;

import "./libraries/BytesLib.sol";

import "./GatewayStructs.sol";
import "./GatewayGetters.sol";

contract GatewayMessageParser is GatewayGetters {
    using BytesLib for bytes;

    function _parseAndVerifyMessage(bytes memory message)
        internal
        view
        returns (
            GatewayStructs.ParsedMessage memory parsedMessage,
            bool ok,
            string memory err
        )
    {
        parsedMessage = parseMessage(message);
        (ok, err) = verifyMessage(parsedMessage);
    }

    function parseMessage(bytes memory message)
        internal
        pure
        returns (GatewayStructs.ParsedMessage memory result)
    {
        uint256 index = 0;

        uint8 signatureLength = message.toUint8(index);
        index += 1;

        result.signatures = new GatewayStructs.Signature[](signatureLength);
        for (uint256 i = 0; i < signatureLength; i++) {
            result.signatures[i].signerIndex = message.toUint8(index);
            index += 1;
            result.signatures[i].r = message.toBytes32(index);
            index += 32;
            result.signatures[i].s = message.toBytes32(index);
            index += 32;
            result.signatures[i].v = message.toUint8(index) + 27;
            index += 1;
        }

        bytes memory body = message.slice(index, message.length - index);
        result.messageHash = keccak256(abi.encodePacked(keccak256(body)));

        result.nonce = message.toUint32(index);
        index += 4;

        result.payload = message.slice(index, message.length - index);
    }

    function verifyMessage(GatewayStructs.ParsedMessage memory parsedMessage)
        internal
        view
        returns (bool ok, string memory err)
    {
        if (isUsed(parsedMessage.messageHash))
            return (false, "GatewayMessageParser: hash is already used");
        address[] memory signers_ = signers();

        (bool isSigValid, string memory sigErr) = verifySignatures(
            parsedMessage.messageHash,
            parsedMessage.signatures,
            signers_
        );
        if (!isSigValid) {
            return (false, sigErr);
        }

        return (true, "");
    }

    function verifySignatures(
        bytes32 messageHash,
        GatewayStructs.Signature[] memory sigs,
        address[] memory signers
    ) internal pure returns (bool ok, string memory error) {
        uint8 lastIndex = 0;
        bytes32 prefixedHash = toEthSignedMessageHash(messageHash);
        for (uint256 i = 0; i < sigs.length; i++) {
            GatewayStructs.Signature memory sig = sigs[i];

            require(
                i == 0 || sig.signerIndex > lastIndex,
                "GatewayMessageParser: signature indices must be ascending"
            );
            lastIndex = sig.signerIndex;

            if (ecrecover(prefixedHash, sig.v, sig.r, sig.s) != signers[sig.signerIndex]) {
                return (false, "GatewayMessageParser: signature is invalid");
            }
        }
        return (true, "");
    }

    function toEthSignedMessageHash(bytes32 hash) internal pure returns (bytes32) {
        // 32 is the length in bytes of hash,
        // enforced by the type signature above
        return keccak256(abi.encodePacked("\x19Ethereum Signed Message:\n32", hash));
    }
}

