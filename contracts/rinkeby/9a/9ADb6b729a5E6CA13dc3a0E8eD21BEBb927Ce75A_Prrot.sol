contract Prrot{

   event postEvent(address indexed _address, uint256 indexed blockNumber, string indexed ogPost, uint64 sequence, string content);

   mapping(string => string) public allPosts;
   mapping(uint256 => string) public getPostIdFromTokenId;
   uint256[] public allTokenIds;

   string[] public allKeys;

   function newPost(string memory ogPost, uint64 sequence, string memory content) public returns (string memory) {
      require(bytes(content).length < 280);
      string memory packedPost = string(abi.encodePacked("1_", utils.toAsciiString(msg.sender), "_", Strings.toString(block.number), "_", Strings.toString(sequence)));
      require(bytes(allPosts[packedPost]).length == 0);
      allPosts[packedPost] = content;
      allKeys.push(packedPost);
      emit postEvent(msg.sender, block.number, ogPost, sequence, content);
      return packedPost;
   }

   function newPostEvent(string memory ogPost, uint64 sequence, string memory content) public {
      require(bytes(content).length < 280);
      emit postEvent(msg.sender, block.number, ogPost, sequence, content);
   }

}

