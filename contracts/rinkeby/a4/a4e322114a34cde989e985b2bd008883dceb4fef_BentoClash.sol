        IUFragments(clashFrom.indexToken).burn(_msgSender(), amountBurn);
        balances[_cidFrom][_msgSender()] = 0;

        // Deposit to another pool
        ClashInfo storage clashTo = clashes[_cidTo];
        IStrategy poolTo = clashTo.pools[_pidTo];

        // Deposit to the pool
        poolTo.deposit{value:address(this).balance}(_msgSender());

        // Mint index token
        uint256 exchangeRate;
        bool rateValid;
        (exchangeRate, rateValid) = IOracle(clashTo.oracle).getData();
        require(rateValid, "BentoClash.deposit: Oracle data is not valid");
        
        uint256 amountMint = exchangeRate.mul(address(this).balance).div(1e18);
        balances[_cidTo][_msgSender()] = balances[_cidTo][_msgSender()].add(amountMint);
        IUFragments(clashTo.indexToken).mint(msg.sender, amountMint);
    }

    /// @dev Private method for withdrawal
    function _withdrawAll(bytes32 _clashId, uint256 _pid) internal {
        ClashInfo storage clash = clashes[_clashId];
        IStrategy pool = clash.pools[_pid];
        pool.withdrawAll(_msgSender(), _msgSender());
        pool.harvest(_msgSender(), _msgSender());

        uint256 amountBurn = balances[_clashId][_msgSender()];
        IUFragments(clash.indexToken).burn(_msgSender(), amountBurn);
        balances[_clashId][_msgSender()] = 0;
    }


    /// @dev Reset approval and approve exact amount
    function _approveHelper(
        address token,
        address recipient,
        uint256 amount
    ) internal {
        IERC20(token).safeApprove(recipient, 0);
        IERC20(token).safeApprove(recipient, amount);
    }
