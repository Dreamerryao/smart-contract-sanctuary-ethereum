contract BentoClash is Context {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    /// @notice Clash Definations
    bytes32 public constant ZEN_CLASH = keccak256("ZEN_CLASH");
    bytes32 public constant SAMU_CLASH = keccak256("SAMU_CLASH");
    bytes32 public constant SUMO_CLASH = keccak256("SUMO_CLASH");


    /// @notice Clash Info Structure
    struct ClashInfo {
        IStrategy[] pools;
        address indexToken;
        address oracle;
    }

    /// @notice Access Controls
    IBentoAccessControls public accessControls;
    /// @notice Array of pools
    mapping(bytes32 => ClashInfo) public clashes;
    /// @notice Array of balances of index tokens
    mapping(bytes32 => mapping(address => uint256)) public balances;

    /**
     @notice Constructor
     @param _accessControls AccessControls address
     */
    constructor(IBentoAccessControls _accessControls) public {
        require(address(_accessControls) != address(0), "BentoClash.constructor: Invalid Access Controls");

        accessControls = _accessControls;
    }

    /**
     @notice Method for viewing size of pools for the clash
     @param _clashId ClashId
     */
    function poolsLength(bytes32 _clashId) external view returns (uint256) {
        ClashInfo storage clash = clashes[_clashId];
        return clash.pools.length;
    }

    /**
     @notice Method for initiation of clash
     @dev only admin can call this method
     @param _clashId ClashId
     @param _indexToken Address of index token
     @param _oracle Address of oracle
