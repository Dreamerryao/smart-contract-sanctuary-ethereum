    function initializeClash(bytes32 _clashId, address _indexToken, address _oracle) external {
        require(accessControls.hasAdminRole(_msgSender()), "BentoClash.addPool: Sender must be admin role");
        ClashInfo storage clash = clashes[_clashId];
        clash.indexToken = _indexToken;
        clash.oracle = _oracle;
    }

    /**
     @notice Method for adding pool into clash
     @dev only admin can call this method
     @param _clashId Clash Id
     @param _strategy Strategy of new pool
     */
    function addPool(bytes32 _clashId, IStrategy _strategy) external {
        require(accessControls.hasAdminRole(_msgSender()), "BentoClash.addPool: Sender must be admin role");
        ClashInfo storage clash = clashes[_clashId];
        clash.pools.push(_strategy);
        _approveHelper(_strategy.want(), address(_strategy), uint256(-1));
    }

    /**
     @notice Method for updating access controls
     @dev only admin can call this method
     @param _accessControls AccessControls address
     */
    function updateAccessControls(IBentoAccessControls _accessControls) external {
        require(accessControls.hasAdminRole(_msgSender()), "BentoClash.updateAccessControls: Sender must be admin role");
        require(address(_accessControls) != address(0), "BentoClash.updateAccessControls: Invalid Access Controls");
        accessControls = _accessControls;
    }

