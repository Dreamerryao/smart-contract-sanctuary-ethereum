    function deposit(bytes32 _clashId, uint256 _pid) external payable {
        ClashInfo storage clash = clashes[_clashId];
        IStrategy pool = clash.pools[_pid];

        // Deposit to the pool
        pool.deposit{value:msg.value}(_msgSender());

        // Mint index token
        uint256 exchangeRate;
        bool rateValid;
        (exchangeRate, rateValid) = IOracle(clash.oracle).getData();
        require(rateValid, "BentoClash.deposit: Oracle data is not valid");

        uint256 amountMint = exchangeRate.mul(msg.value).div(1e18);
        balances[_clashId][_msgSender()] = balances[_clashId][_msgSender()].add(amountMint);
        IUFragments(clash.indexToken).mint(msg.sender, amountMint);
    }

    /**
     @notice Method for withdrawal
     @param _clashId Clash Id
     @param _pid Pool Id
