pragma solidity ^0.8.0;

import "./CollectionCore.sol";


contract Collection is CollectionCore {
    constructor(string memory tokenName, string memory tokenSymbol, string memory uriPrefix) CollectionCore(tokenName, tokenSymbol, uriPrefix) {}


    function areMinters(address[] calldata accounts)
        external
        view
        returns (bool)
    {

        for (uint256 i = 0; i < accounts.length; i++) {
            if (!isMinter(accounts[i])) {
                return false;
            }
        }
        return true;
    }

    function getMetadataByTokenIds(uint256[] calldata tokenIds)
        external
        view
        returns (string[] memory, address[] memory, uint256[] memory, uint256[] memory)
    {
        string[] memory _uris = new string[](tokenIds.length);
        address[] memory _creators = new address[](tokenIds.length);
        uint256[] memory _royalties = new uint256[](tokenIds.length);
        uint256[] memory _totalSupplies = new uint256[](tokenIds.length);



        for (uint256 i = 0; i < tokenIds.length; ++i) {
            uint256 id = tokenIds[i];
            _uris[i] = uri(id);
            _creators[i] = creator(id);
            _royalties[i] = royalty(id);
            _totalSupplies[i] = totalSupply(id);
        }

        return (_uris, _creators, _royalties, _totalSupplies);
    }


}

