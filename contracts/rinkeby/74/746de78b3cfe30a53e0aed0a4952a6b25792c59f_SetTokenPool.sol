pragma solidity 0.6.10;
contract SetTokenPool {
    event xTokenInit(address indexed _xToken,string indexed name ,address indexed createor);
    event Deposit(address indexed dst, uint wad);
    event buyDefi10Amount(uint256 indexed amount);
    event ReaminAdd(address indexed user,uint256 indexed amount);
    mapping(address => uint256) public remain;
    address public poolManger;
    address public basicIssuanceModuleAddress;
    uint256 public xTokenCurrency;
    uint256 public defi10PoolCurrency;
    address setToken;
    XToken xToken;
    string public name = "xToken";
    string public symbol = "xToken";
    receive() payable external {}


    constructor(address moduleAddress,address _setToken) public{ 
        basicIssuanceModuleAddress = moduleAddress;
        setToken = _setToken;
        poolManger = msg.sender;
        xToken =  new XToken(name,symbol,address(this));
        emit xTokenInit(address(xToken), "xToken", msg.sender);
    }
    
    /** 
    * addPool
    * user add the pool ETH, contract mint to user xToken
    * update LP
    */
    function addPool(uint256 amount) public payable{
        require(msg.value >= amount,"ETH_NOT_ENOUGH");
        xToken.mint(msg.sender,amount);
        xTokenCurrency += amount;
    }

    /**
    *  buy 
    * only manger
    */
    function buy(uint256 useAmount,uint256 setTokenAmount) public {
        require(msg.sender == poolManger,"Caller is not a manger");
        require(xTokenCurrency >= useAmount,"xTokenCurrency NOT ENOUGH");
        uint256 beforeEth = address(this).balance;
        bool success = BasicIssuanceModule(basicIssuanceModuleAddress).buyAndissue{value:useAmount}(setToken, setTokenAmount, now+5000);
        require(success,"module buy error");
        uint256 afterEth = address(this).balance;
        uint256 remainEth = afterEth - beforeEth;
        remain[msg.sender] += remainEth;
        emit ReaminAdd(msg.sender,remainEth);
        uint256 setTokenAfter = ERC20(setToken).balanceOf(address(this));
        emit buyDefi10Amount(setTokenAfter-defi10PoolCurrency);
        defi10PoolCurrency = setTokenAfter;
    }
   

    /**
    * exchage
    */
    function exchange(uint256 xTokenAmount) public{
        require(xToken.balanceOf(msg.sender) >= xTokenAmount,"xToken NOT ENOUGH");
        uint256 withdrawDefi10Amount = xTokenAmount / xTokenCurrency * defi10PoolCurrency;
        ERC20(setToken).transferFrom(address(this), msg.sender, withdrawDefi10Amount);
    }

    /**
    * withdraw 
    * only manger
    */
    function withdraw(uint256 amount) public {
        require(msg.sender == poolManger,"Caller is not a manger");
        require(address(this).balance >= amount,"REMAIN AMOUNT NOT ENOUGH");
        (bool success,) = msg.sender.call{value:amount}(new bytes(0));
        require(success, 'withdraw: ETH_TRANSFER_FAILED');
    }
}