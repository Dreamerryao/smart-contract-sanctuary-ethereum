pragma solidity ^0.8.0;

import "./Managable.sol";
import "./IBot.sol";
import "./IBotMetadata.sol";
import "./LibBot.sol";

contract BotManager is Managable {
    address private botMetadataAddress;
    address private botAddress;

    constructor(
        address _botMetadataAddress,
        address _botAddress
    ) {
        botMetadataAddress = _botMetadataAddress;
        botAddress = _botAddress;

        _addManager(msg.sender);
    }

    function mintGenesis(address _to, uint256 _tokenId, uint256 _dna) external onlyManager {
        LibBot.Bot memory _bot;
        _bot.genes = _dna;
        _bot.generation = 0;
        _bot.breedCount = 0;
        _bot.birthTime = block.timestamp;
        _bot.lastBreed = 0;
        _bot.matronId = 0;
        _bot.sireId = 0;
        _bot.revealCooldown = 0;

        IBot(botAddress).mintTokenId(_to, _tokenId);
        IBotMetadata(botMetadataAddress).setBot(_tokenId, _bot);
    }
}

//SPDX-License-Identifier: Unlicense
pragma solidity ^0.8.0;

contract Managable {
    mapping(address => bool) private managers;

    event AddedManager(address _address);
    event RemovedManager(address _address);

    modifier onlyManager() {
        require(managers[msg.sender], "caller is not manager");
        _;
    }

    function addManager(address _manager) external onlyManager {
        _addManager(_manager);
    }

    function removeManager(address _manager) external onlyManager {
        _removeManager(_manager);
    }

    function _addManager(address _manager) internal {
        managers[_manager] = true;
        emit AddedManager(_manager);
    }

    function _removeManager(address _manager) internal {
        managers[_manager] = false;
        emit RemovedManager(_manager);
    }
}

