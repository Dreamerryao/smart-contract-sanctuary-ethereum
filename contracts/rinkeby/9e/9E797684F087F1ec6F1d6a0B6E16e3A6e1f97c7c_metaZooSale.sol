pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC721/extensions/IERC721Enumerable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

contract metaZooSale is Ownable {
    using SafeMath for uint256;

    /* 
    using tokenIndex to retrieve tokenID to send.
    Sale with start at 5 eth and decrease by 0.1 eth every 15 minutes for 12 hours.
    */

    modifier initializeDone() {
        require(setupStatus, "Meta Zoo Set up not initialized yet");
        _;
    }

    uint256 public startingPrice = 5 ether;
    uint256 public sales_start;
    uint256 public sales_end;

    address public nft_sales;
    uint256 sales_duration = 12 hours;
    address payable _multisig;
    bool public setupStatus = false;
    uint256 public sold = 0;

    function initialize() public onlyOwner {
        require(
            IERC721(nft_sales).balanceOf(address(this)) >= 500,
            "Please fund Meta zoo with 500 or more NFTs"
        );
        setupStatus = true;
    }

    function currentPrice() public view returns (uint256) {
        uint256 gap = block.timestamp - sales_start;
        uint256 counts = gap / (15 * 60);
        if (gap >= sales_duration) {
            return 0.2 ether;
        }
        return startingPrice - (counts * 0.1 ether);
    }

    function remainingTokens() public view returns (uint256) {
        return IERC721(nft_sales).balanceOf(address(this));
    }

    function testPrice(uint256 gap) public view returns (uint256) {
        uint256 counts = gap / (15 * 60);
        if (gap >= sales_duration) {
            return 0.2 ether;
        }
        return startingPrice - (counts * 0.1 ether);
    }

    constructor(
        uint256 _sales_start,
        address _nft_sales,
        address payable __multisig
    ) {
        sales_start = _sales_start;
        sales_end = sales_start + 12 hours;
        nft_sales = _nft_sales;
        _multisig = __multisig;
    }

    function purchase(uint256 _amount) public payable initializeDone {
        require(
            salesActive(),
            "Sales has not started or ended , please chill sir."
        );
        require(msg.value >= _amount.mul(currentPrice()), "Price not met");
        uint256 _id;
        for (uint16 i = 0; i < _amount; i++) {
            _id = IERC721Enumerable(nft_sales).tokenOfOwnerByIndex(
                address(this),
                i
            );
            IERC721(nft_sales).transferFrom(address(this), msg.sender, _id);
        }
        (bool sent, bytes memory data) = _multisig.call{value: msg.value}(""); // don't use send or xfer (gas)
        require(sent, "Failed to send Ether");
        sold += _amount;
    }

    function salesActive() public view returns (bool) {
        return (block.timestamp > sales_start && block.timestamp < sales_end);
    }

    function how_long_more()
        public
        view
        returns (
            uint256 Days,
            uint256 Hours,
            uint256 Minutes,
            uint256 Seconds
        )
    {
        require(block.timestamp < sales_start, "Started");
        uint256 gap = sales_start - block.timestamp;
        Days = gap / (24 * 60 * 60);
        gap = gap % (24 * 60 * 60);
        Hours = gap / (60 * 60);
        gap = gap % (60 * 60);
        Minutes = gap / 60;
        Seconds = gap % 60;
        return (Days, Hours, Minutes, Seconds);
    }

    function resetSalesStatus(
        uint256 _sales_start,
        address _nft_sales,
        address payable __multisig,
        bool _setupStatus
    ) external onlyOwner {
        sales_start = _sales_start;
        nft_sales = _nft_sales;
        _multisig = __multisig;
        setupStatus = _setupStatus;
    }

    function retrieveETH() external onlyOwner {
        payable(msg.sender).transfer(address(this).balance);
    }

    function retrieveERC20(address _tracker, uint256 amount)
        external
        onlyOwner
    {
        IERC20(_tracker).transfer(msg.sender, amount);
    }

    function retrieve721(address _tracker, uint256 id) external onlyOwner {
        IERC721(_tracker).transferFrom(address(this), msg.sender, id);
    }

    function massRetrieveNFTs(uint256 _amount) external onlyOwner {
        for (uint16 i = 0; i < _amount; i++) {
            uint256 _id =
                IERC721Enumerable(nft_sales).tokenOfOwnerByIndex(
                    address(this),
                    i
                );
            IERC721(nft_sales).transferFrom(address(this), msg.sender, _id);
        }
    }
}

