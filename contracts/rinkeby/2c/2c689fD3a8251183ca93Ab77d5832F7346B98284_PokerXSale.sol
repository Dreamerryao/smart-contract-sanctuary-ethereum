pragma solidity 0.8.9;

import "@openzeppelin/contracts/utils/math/SafeCast.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

import "./interfaces/IAggregatorV3Interface.sol";
import "./interfaces/IUniswapV2Router02.sol";

contract PokerXSale is Ownable, ReentrancyGuard {
  using SafeCast for int256;
  using SafeMath for uint256;

  IUniswapV2Router02 public uniswapV2Router = IUniswapV2Router02(0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D);
  address wethOracle = 0x8A753747A1Fa494EC906cE90E9f37563A8AF630e; // mainnet: 0x5f4ec3df9cbd43714fe2740f5e3616155c5b8419
  IERC20 public pkxToken;

  uint256 public softcap = 30 * 10 ** 18;
  uint256 public tokenLiquidityAmount;
  uint256 public tokenSaleAmount;
  uint256 public totalRaised = 0;
  mapping(address => uint256) public balances;

  bool public started = false;
  bool public claimable = false;
  bool public refundable = false;

  constructor(IERC20 _pkxToken, uint256 _tokenLiquidityAmount, uint256 _tokenSaleAmount) {
    pkxToken = _pkxToken;
    tokenLiquidityAmount = _tokenLiquidityAmount;
    tokenSaleAmount = _tokenSaleAmount;
  }

  function changeSoftCap(uint256 amount) external onlyOwner {
    softcap = amount;
  }

  function changeTokenLiquidityAmount(uint256 amount) external onlyOwner {
    tokenLiquidityAmount = amount;
  }

  function changeTokenSaleAmount(uint256 amount) external onlyOwner {
    tokenSaleAmount = amount;
  }

  function startPresale() external onlyOwner {
    started = true;
  }

  function startClaim() external onlyOwner {
    claimable = true;
  }

  function startRefund() external onlyOwner {
    refundable = true;
  }

  function _deposit(address account, uint256 amount) internal {
    require(started, "Presale is not started");
    balances[account] += amount;
    totalRaised += msg.value;
  }

  receive() external payable {
    _deposit(msg.sender, msg.value);
  }

  function deposit() external payable nonReentrant {
    _deposit(msg.sender, msg.value);
  }

  function claim() external nonReentrant {
    require(claimable, "Presale is not ended");
    uint256 tokenReceive = claimableAmount(msg.sender);
    pkxToken.transfer(msg.sender, tokenReceive);
  }

  function claimableAmount(address account) public view returns (uint256) {
    return tokenSaleAmount * balances[account] / totalRaised;
  }

  function getRefund() external nonReentrant {
    require(refundable, "Presale is not failed");
    payable(msg.sender).transfer(balances[msg.sender]);
  }

  function getTokenPrice() external view returns (uint256) {
    uint256 answer = IAggregatorV3Interface(wethOracle).latestAnswer().toUint256();
    require(answer > 0, "INVALID_ORACLE_ANSWER");

    uint256 ethAmount = softcap;
    if (totalRaised > softcap) {
      ethAmount = totalRaised;
    }

    return ethAmount * answer / (10 ** IAggregatorV3Interface(wethOracle).decimals()) / tokenSaleAmount;
  }

  function addLiquidity(uint256 ethAmount) external onlyOwner {
    // approve token transfer to cover all possible scenarios
    pkxToken.approve(address(uniswapV2Router), tokenLiquidityAmount);
    // add the liquidity
    uniswapV2Router.addLiquidityETH{ value: ethAmount }(
      address(pkxToken),
      tokenLiquidityAmount,
      0, // slippage is unavoidable
      0, // slippage is unavoidable
      msg.sender,
      block.timestamp
    );
  }

  function withdrawETH(address payable _recipient, uint256 amount) external onlyOwner {
    _recipient.transfer(amount);
  }
}

