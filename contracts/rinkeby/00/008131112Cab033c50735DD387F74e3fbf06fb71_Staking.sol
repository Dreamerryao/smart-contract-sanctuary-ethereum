interface IFactory{
    function importRewards(address _user, uint256 _amount) external;
}

contract Staking is Ownable, ERC20("XShkooby", "xSKH") ,Pausable {
    using SafeERC20 for IERC20;
    using SafeMath for uint256;

    uint256 public depositCounter;
    IERC20 public stakingToken;
    IFactory public factory;
    bool public emergencyFlag = false;
    uint256 public tvl;
    uint256 public lockDuration;
    uint256 timeStone;
    uint256 depositLimit=10;
    uint256 totalCirculatingSupply=100000000000000000;
    uint256 minimumStakingPeriod=600;
    uint256 percentageDecimal=10;
    uint256 stakingEndTime;

    enum DepositState {
        DEPOSITED,
        REWARD_CLAIMED
    }

    struct Deposit {
        uint256 amount;
        uint256 startTime;
        uint256 unlockTime;
        DepositState depositState;
    }

    /**
     * @notice event when deposit is emitted
     */
    event Deposited(uint256 indexed depositNumber, address indexed depositor, uint256 amount, uint256 unlockTime);

    /**
     * @notice event when deposit is withdrawn
     */
    event Withdraw(uint256 indexed depositNumber);

    /**
     * @notice event when vested reward is withdrawn
     */
    event WithdrawVestedReward(uint256 indexed depositNumber);

    /**
     * @notice event when token are withdrawn on emergency
     */
    event EmegencyWithdrawToken(uint256 indexed depositNumber);

    /**
     * @notice max number of deposits that can be operated in the single call
     */


    mapping(address => Deposit) public userFlexiDeposit;
    mapping(address => Deposit[]) public userDeposit;   // user -> (deposit #) -> Deposit Detail
    uint256[] public allowedLockingPeriods;
    mapping(uint256 => uint256) public lockingDurationToMultiplier;
    // mapping(address => uint256) userTotalDeposit;   // user -> (deposit)

    constructor(IERC20 _stakingToken, IFactory _factory){
        stakingToken= IERC20(_stakingToken);
        factory= _factory;
        // lockingPeriods 
        allowedLockingPeriods.push(120);
        allowedLockingPeriods.push(240);
        allowedLockingPeriods.push(360);
        // Multipliers
        lockingDurationToMultiplier[allowedLockingPeriods[0]]= 105; // 1.05
        lockingDurationToMultiplier[allowedLockingPeriods[1]]= 125; // 1.25
        lockingDurationToMultiplier[allowedLockingPeriods[2]]= 150; //1.5
    }
    
    modifier checkValidLockPeriod(uint256 _lockPeriod){
        bool flag=false;
        for(uint8 i=0;i<allowedLockingPeriods.length;i++){
            if(_lockPeriod == allowedLockingPeriods[i]){
                flag=false;
                break;
            }else{
                flag=true;
            }
        }
        if(flag==true){
            revert();
        }
        _;
    }

    modifier checkValidDeposit(uint _amount){
        if(depositCounter!=0){
            _amount= (_amount * 100 * 10**percentageDecimal)/tvl;
        }
        require(_amount>0, "Deposit Amount too low");
        _;
    }

    function deposit(uint256 _amount, uint256 _lockPeriod) public checkValidLockPeriod(_lockPeriod) checkValidDeposit(_amount) {
        require(emergencyFlag == false, "Cannot lock during emergency");

    // take the tokens in this address and mint equal number of XShkooby to the sender
        IERC20(stakingToken).transferFrom(msg.sender, address(this), _amount);
        _mint(msg.sender, _amount); // minting ratio is 1:1
        tvl= tvl.add(_amount);
        // userTotalDeposit[msg.sender] =  userTotalDeposit[msg.sender].add(_amount);
    
    // Create new entry for each deposition
        depositCounter++;
        userDeposit[msg.sender].push(
            Deposit(
                _amount, 
                block.timestamp, 
                block.timestamp.add(_lockPeriod),
                DepositState.DEPOSITED
            )
        );
        emit Deposited(depositCounter, msg.sender, _amount, block.timestamp.add(_lockPeriod));
    }

    // view function to show amount of token that can be claimed
    function unclaimedShkooby(address _user) public view returns(uint256){
        uint256 claimableAmt;
        for(uint8 i=0; i<userDeposit[_user].length ; i++){
            if(userDeposit[_user][i].unlockTime < block.timestamp && userDeposit[_user][i].depositState==DepositState.DEPOSITED){
                claimableAmt= claimableAmt.add(userDeposit[_user][i].amount);
            }
        }
        return claimableAmt;
    }

    function depositFlexi(uint256 _amount) public checkValidDeposit(_amount) {
        require(emergencyFlag == false, "Cannot lock during emergency");
    // take the tokens in this address and mint equal number of XShkooby to the sender
        IERC20(stakingToken).safeTransferFrom(msg.sender, address(this), _amount);
        _mint(msg.sender, _amount); // minting ratio is 1:1
    
    // entry for each deposition
        depositCounter++;
        uint256 updatedAmount= (userFlexiDeposit[msg.sender].amount+ _amount);
        tvl= tvl.add(_amount);
        // userTotalDeposit[msg.sender]= userTotalDeposit[msg.sender].add(_amount); 
        userFlexiDeposit[msg.sender]= 
            Deposit(
                updatedAmount, 
                block.timestamp,
                0,
                DepositState.DEPOSITED
            );
    }

    function withdrawShkooby(address _user, uint _index) public {
        Deposit storage _deposit= userDeposit[_user][_index]; 
        require(_deposit.depositState == DepositState.REWARD_CLAIMED, "claim the rewards first");
        uint amount= _deposit.amount;
        tvl = tvl.sub(amount);
        uint32 lengthofDepositions= uint32(userDeposit[_user].length);
        userDeposit[_user][_index]= userDeposit[_user][lengthofDepositions-1];
        userDeposit[_user].pop();
        _burn(_user, amount);
        IERC20(stakingToken).safeTransfer(_user, amount);
        emit Withdraw(depositCounter);
    }

    function withdrawShkoobyFromFlexi(address _user) public {
        Deposit storage _deposit= userFlexiDeposit[_user]; 
        require(_deposit.depositState == DepositState.REWARD_CLAIMED, "claim the rewards first");
        uint amount= _deposit.amount;
        tvl = tvl.sub(amount);
        delete userFlexiDeposit[_user];
        _burn(_user, amount);
        IERC20(stakingToken).safeTransfer(_user, amount);
        emit Withdraw(depositCounter);
    }

    function claim(uint _index) public {
        require(userDeposit[msg.sender][_index].unlockTime< block.timestamp,"cannot claim before time");
        require(userDeposit[msg.sender][_index].depositState!= DepositState.REWARD_CLAIMED, "Rewards already claimed");
        uint calculatedReward= rewardAccrued(msg.sender, _index);
        userDeposit[msg.sender][_index].depositState= DepositState.REWARD_CLAIMED;

        IFactory(factory).importRewards(msg.sender, calculatedReward);
        stakingToken.transfer(address(factory), calculatedReward);
    }   

    function flexiClaim() public {
        require(userFlexiDeposit[msg.sender].unlockTime< block.timestamp,"cannot claim before time");
        uint calculatedReward= flexiRewardAccrued(msg.sender);
        userFlexiDeposit[msg.sender].depositState= DepositState.REWARD_CLAIMED;

        IFactory(factory).importRewards(msg.sender, calculatedReward);
        stakingToken.transfer(address(factory), calculatedReward);
    }

    function claimMultiple(uint[] memory _indexes) public{
        for(uint8 i=0; i<_indexes.length; i++){
           claim(i);
        }
    }

    function rewardAccrued(address _user, uint256 _index) public view returns(uint){
        uint256 startTime= userDeposit[_user][_index].startTime; 
        uint256 unlockTime= userDeposit[_user][_index].unlockTime;  
        uint256 amount= userDeposit[_user][_index].amount;
        // Check the duration of lock: Multiple accordingly
        uint totalReward= (totalCirculatingSupply*5)/100;   // 5% of totalCirculatingSupply
        uint totalRewardStaking= (totalReward* 20)/100;  //  20% of totalRewards for Staking Rewards

        uint userStakePercentage= (amount.mul(10**percentageDecimal)).div(tvl);    // Calculated in percentage then multiplied by 10 decimal
        uint totalRewardPerSecond= totalRewardStaking/(minimumStakingPeriod);
        // Total reward after multiplying with a multiplier
        uint256 lockingDuration= unlockTime.sub(startTime); 
        uint userReward= userStakePercentage* (totalRewardPerSecond * block.timestamp.sub(startTime));
        userReward= (userReward* lockingDurationToMultiplier[lockingDuration]) / 100;
        userReward= userReward.div(10** percentageDecimal);
        return userReward;
    }

    function flexiRewardAccrued(address _user) public view returns(uint){
        uint256 startTime= userFlexiDeposit[_user].startTime; 
        uint256 amount= userFlexiDeposit[_user].amount;
        // Check the duration of lock: Multiple accordingly
        uint totalReward= (totalCirculatingSupply*5)/100;   // 5% of totalCirculatingSupply
        uint totalRewardStaking= (totalReward* 20)/100;  //  20% of totalRewards for Staking Rewards
        uint userStakePercentage= (amount.mul(10**percentageDecimal)).div(tvl);    // Calculated in percentage then multiplied by 10 decimal
        uint totalRewardPerSecond= totalRewardStaking/(minimumStakingPeriod);
        uint userReward= userStakePercentage* (totalRewardPerSecond * block.timestamp.sub(startTime));
        userReward= userReward.div(10** percentageDecimal);
        return userReward;
    }


    function amountClaimed() public view returns(uint256){
        uint256 claimedAmt;
        for(uint8 i=0; i< userDeposit[msg.sender].length;i++){
            if(userDeposit[msg.sender][i].depositState == DepositState.REWARD_CLAIMED){
                claimedAmt = claimedAmt.add(userDeposit[msg.sender][i].amount); 
            }
        }
        return claimedAmt;
    }

    function withdrawMultiple(uint[] memory _indexes) public {
        for(uint8 i=0; i<_indexes.length; i++){
           withdrawShkooby(msg.sender, i);
        }
    }

    /**
     * @notice function to pause
     */
    function pauseStaking() external onlyOwner {
        _pause();
    }

    /**
     * @notice function to unpause
     */
    function unpauseStaking() external onlyOwner {
        _unpause();
    }

    /**
     * @notice Modifier to prevent staking after the staking period ends
     */
    modifier beforeStakingEnds() {
        require(block.timestamp < stakingEndTime, "Staking time is over");
        _;
    }
}