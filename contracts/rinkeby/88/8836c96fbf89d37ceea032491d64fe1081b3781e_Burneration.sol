/// @title The Burneration contract
/// @author nAAMa
/// @notice Custom transfer logic on ERC721

contract Burneration is ERC721,Ownable {
    using Counters for Counters.Counter;
Counters.Counter private idTracker;
string private baseURI;
uint256 public maxTokens;
uint256 public constant PRICE = 0.001 ether;

event Mint(address indexed owner, uint256 indexed id);

constructor(uint256 _maxTokens)ERC721("Burneration", "ARSONER"){
maxTokens = _maxTokens;
}


function nextId() private returns (uint256){
    idTracker.increment();
    return idTracker.current();
}
function withdraw() public onlyOwner {
    uint256 balance = address(this).balance;
    payable(msg.sender).transfer(balance);
}
function getBaseURI() external view returns (string memory){
    return baseURI;
}
function getLastId() public view returns (uint256){
    return idTracker.current();
}
function getPenultimateId() public view returns (uint256){
return idTracker.current() - 2;
}
function mint(uint256 amount)external payable {


    for(uint256 i=0;i<amount;i++){
        _safeMint(msg.sender,  nextId());
        emit Mint(msg.sender, getLastId());
    }
}
function setBaseURI(string memory _baseURI) external onlyOwner {
    baseURI = _baseURI;
}
    function tokenURI(uint256 id) public view virtual override returns (string memory) {
            return string(abi.encodePacked(baseURI, Strings.toString(id)));

        }

    /**
    * @dev Override safeTransferFrom to burn the penultimate token id after transfer
     */
    function safeTransferFrom(
        address from,
        address to,
        uint256 id,
        bytes memory data
    ) public virtual override {
        transferFrom(from, to, id);
        uint256 penultimateId = getPenultimateId();
        _burn(penultimateId);
        
        require(
            to.code.length == 0 ||
                ERC721TokenReceiver(to).onERC721Received(msg.sender, from, id, data) ==
                ERC721TokenReceiver.onERC721Received.selector,
            "UNSAFE_RECIPIENT"
        );
    }

}

