/**
 * @title ApeInuClaim contract
 * @dev Extends ERC721 Non-Fungible Token Standard basic implementation
 */

contract ApeInuClaim is Ownable {
    // address public constant ApeInu = 0xBbDbD8764c434CC806F8d9194D51469d14244E35;
    // address public constant BAYC = 0xBC4CA0EdA7647A8aB7C2061c2E118A18a936f13D;
    // address public constant MAYC = 0x60E4d786628Fea6478F785A6d7e704777c86a7c6;

    address public constant ApeInu = 0x79B068E307E690B0688127C5012A6F1A8F0b3d74;
    address public constant BAYC = 0xBdB0187fAaDdBf450D1fA170fD576417349537c6;
    address public constant MAYC = 0x1c54d5219AfF930f6739C0C8E12c5C267bB1F7F8;

    mapping (uint256 => bool) public baycClaimStatus;
    mapping (uint256 => bool) public maycClaimStatus;
    
    uint256 public baycClaimAmount = 500 * 10 ** 9;
    uint256 public maycClaimAmount = 250 * 10 ** 9;

    bool public claimStart;

    
    constructor() {
    }

    function updateBAYCClaimAmount(uint256 newAmount) external onlyOwner {
        baycClaimAmount = newAmount;
    }

    function updateMAYCClaimAmount(uint256 newAmount) external onlyOwner {
        maycClaimAmount = newAmount;
    }    

    function updateClaimStart(bool flag) external onlyOwner {
        claimStart = flag;
    }

    function baycClaim(uint256 tokenId) external {
        require(claimStart, "Claim not started yet.");
        require(IERC721(BAYC).ownerOf(tokenId) == msg.sender, "Not owner of token.");
        
        baycClaimStatus[tokenId] = true;
        IERC20(ApeInu).transfer(msg.sender, baycClaimAmount);
    }

    function maycClaim(uint256 tokenId) external {
        require(claimStart, "Claim not started yet.");
        require(IERC721(MAYC).ownerOf(tokenId) == msg.sender, "Not owner of token.");
        
        maycClaimStatus[tokenId] = true;
        IERC20(ApeInu).transfer(msg.sender, maycClaimAmount);
    }

    /**
     * withdraw
     */
    function withdrawMYST() public onlyOwner {
        IERC20(ApeInu).transfer(msg.sender, IERC20(ApeInu).balanceOf(address(this)));
    }
}

