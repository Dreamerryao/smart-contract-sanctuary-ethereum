pragma solidity ^0.8.10;

import './Admin.sol';
import './BPoints.sol';

abstract contract User is Admin, BPoints{

    mapping(address => bool) public isUserExists;
    function removeUser(address user) public onlyOwner() returns (uint256) {
        require(isUserExists[user] == true, "user not exists");
        uint256 claims = BPoints.balanceOf(user);
        if (claims > 0) {
            BPoints.use( user, claims );
        }
        isUserExists[user] = false;
        return claims;
    }
    function changeUser(address olduser, address newuser) public onlyOwner() {
        require(isUserExists[olduser] == true, "user not exists");
        uint256 claims = removeUser(olduser);
        if (claims > 0) {
            depositByAdmin(newuser, claims);
        } else {
            addUser(newuser);
        }        
    }
    function addUser(address user) public onlyOwner() {        
        require(isUserExists[user] == false, "user already exists");
        isUserExists[user] = true;
    }
    modifier onlyUser() {
        if (owner != msg.sender) {
            require(isUserExists[msg.sender], "user does not exists");
        }
        _;
    }

    // DEPOSIT BPoins to user balance
    // * BPoins can be used for create new NFTs and allow to claim it
    function depositByAdmin(address _creator, uint256 _amount) public onlyOwner() {
        if (isUserExists[_creator] == false) {
            // If BPoins deposit by admin, the creator also will be sign up like a user
            addUser(_creator);
        }
        BPoints.deposit(_creator, _amount);
    }
}

