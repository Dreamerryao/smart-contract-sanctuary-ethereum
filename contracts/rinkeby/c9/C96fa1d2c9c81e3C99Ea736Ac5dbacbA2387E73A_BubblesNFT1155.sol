pragma solidity ^0.8.10;

import './Bubbles/User.sol';

import "./StringUtilsLib.sol";

import "@openzeppelin/contracts/token/ERC1155/ERC1155.sol";
import "@openzeppelin/contracts/utils/Counters.sol";

contract BubblesNFT1155 is User, ERC1155 {
    using Counters for Counters.Counter;
    using StringUtilsLib for *;

    string public name = 'Bubbles';
    string public symbol = 'NFT';

    struct NftProfile {
        address creator;
        uint256 claimed;
        uint256 maxamount;
        bool onpause;
        string ipfs;
        uint256 limitforoneuser;        
    }
    mapping(uint256 => NftProfile) private NftProfiles;

    constructor() Admin(msg.sender) ERC1155("") {}

    /**
     *
     *  address creator - user who create NFT
     *  uint256 claimed - how mach NFTs was claimed
     *  uint256 maxamount - maximum for claim || if set to 0 it's infinite amount
     *  bool onpause - temparary can't be calimed, this parameter can be change only by creator
     *  uint256 available - how many nft left for claiming
     *    
     */
    function creatorOf( uint256 id ) public view returns (
        address creator,
        uint256 claimed,
        uint256 maxamount,
        bool onpause,
        string memory ipfs,
        uint256 available,
        bool limited,
        uint256 limitforoneuser
        ) {
            require(LastID.current() >= id, "nft id is out of range");  
            NftProfile memory NFT = NftProfiles[id];

            creator = NFT.creator;
            require(creator != address(0), "NFT does not exists");  
            
            claimed = NFT.claimed;
            maxamount = NFT.maxamount;
            onpause = NFT.onpause;
            if (NFT.maxamount != 0) {
                available = NFT.maxamount - NFT.claimed;
            } else if (NFT.onpause) {
                available = 0;                              
            } else {
                available = BPoints.balanceOf(NFT.creator);
            }

            if (maxamount == 0) {
                limited = false;
            } else {
                limited = true;
            }

            ipfs = NFT.ipfs;

            limitforoneuser = NFT.limitforoneuser;
    }

    Counters.Counter public LastID;
    Counters.Counter public _supply;         

    /*
     *
     * admin only (because we are using API for this)
     *
     */
    function claim(uint256 id, address to) public onlyOwner() {        
        require(LastID.current() >= id, "nft id is out of range");
        
        NftProfile memory user = NftProfiles[id];
        require( user.creator != address(0) , "NFT does not exists");

          ( address creator,
            uint256 claimed,
            uint256 maxamount,
            bool onpause,
            string memory ipfs,
            uint256 available,
            bool limited,
            uint256 limitforoneuser
        ) = creatorOf( id );

        require( !onpause , "NFT on pause");
        require( available > 0 , "NFT not available");
        if (!limited) {
            BPoints.use(creator, 1);
        }

        /**
         *
         * LIMIT FOR USER CLAIM
         *
         */
        uint256 amount_claimed_by_user = NFTCLAIMs[to][id];
        require( limitforoneuser > amount_claimed_by_user , "OUT OF LIMIT FOR USER");
        NFTCLAIMs[to][id] = amount_claimed_by_user + 1;
        
        // change available amount
        NftProfiles[id].claimed = NftProfiles[id].claimed + 1;

        _mint(to, id, 1, "");
        _supply.increment();
    }

    mapping(address => mapping(uint256 => uint256)) private NFTCLAIMs;


    // CREATE NEW NFT WITHOUT CLAIMING IT
    // create by admin
    function createNFT(address creator, uint256 maxamount, uint256 limitforoneuser, string memory ipfs) public onlyOwner() returns (uint256) {
        require( limitforoneuser > 0 , "limit for one user need to be > 0");
        if (isUserExists[creator] == false) {
            // If nft creates by admin, the creator also will be sign up like a user
            addUser(creator);
        }
        if (maxamount > 0) {
            uint256 balance = BPoints.balanceOf(creator);
            require( balance >= maxamount , "balance is to low");
            BPoints.use(creator, maxamount);
        }
        return _create(creator, maxamount, limitforoneuser, ipfs);
    }

    /**
     *
     * PUT unlimited nft on pausa
     *
     */
    function byuserPause(uint256 id) public onlyUser() {
        if (owner != msg.sender) {
            require( _get_creator(id) == msg.sender, "user is not creator");
        }
        require( ! NftProfiles[id].onpause, "NFT is on pause");
        require( NftProfiles[id].maxamount != 0, "nft is limited and can't be pause");
        NftProfiles[id].onpause = true;
    }

    /**
     *
     * TORN OFF pausa for unlimited nft 
     *
     */
    function byuserUnpause(uint256 id) public onlyUser() {
        if (owner != msg.sender) {
            require( _get_creator(id) == msg.sender, "user is not creator");
        }
        require( NftProfiles[id].onpause, "NFT is not on pause");
        require( NftProfiles[id].maxamount != 0, "nft is limited and can't be pause");
        NftProfiles[id].onpause = false;
    }

    /** 
     *
     * STOP unlimited nft
     *
     */
    function byuserStop(uint256 id) public onlyUser() { 
        if (owner != msg.sender) {
            require( _get_creator(id) == msg.sender, "user is not creator");
        }
        require( NftProfiles[id].maxamount == 0, "nft is limited");
        NftProfiles[id].maxamount = NftProfiles[id].claimed;
    }

    /**
     *
     * SWITCH NFT STATUS FROM UNLIMIT TO LIMIT
     * maxamount will be used like max amount
     *
     */
    function byuserLimit(uint256 id, uint256 maxamount) public onlyUser() { 
        if (owner != msg.sender) {
            require( _get_creator(id) == msg.sender, "user is not creator");
        }
        require( !NftProfiles[id].onpause, "nft is on pause");
        require( NftProfiles[id].maxamount == 0, "nft is already limited");
        require( NftProfiles[id].claimed < maxamount, "claimed more then new maxamount");
        
        uint256 balance = BPoints.balanceOf(NftProfiles[id].creator);
        uint256 price = maxamount - NftProfiles[id].claimed;
        require( balance >= price , "balance is too low");

        // use BPoints
        BPoints.use(NftProfiles[id].creator, price);

        // set maxamount
        NftProfiles[id].maxamount = maxamount;
    }

    /**
     *
     * LIMITES THE NFT AMOUNT FOR CLAIME BY ONE USER
     * the info stores in NftProfiles map
     *
     */
    function byuserLimitToClaime(uint256 id, uint256 maxamount) public onlyUser() {
        if (owner != msg.sender) {
            require( _get_creator(id) == msg.sender, "user is not creator");
        }
        NftProfiles[id].limitforoneuser = maxamount;
    }

    function _create(address creator, uint256 maxamount, uint256 limitforoneuser, string memory ipfs) private returns (uint256) {
        LastID.increment();
        NftProfiles[LastID.current()] = NftProfile (
            address(creator),
            0,         // claimed
            maxamount, // maxamount
            false,
            ipfs,
            limitforoneuser
        );
        return LastID.current();
    }

    /**
     *
     * GET CREATOR
     *
     */
    function _get_creator(uint256 id) private view returns(address) {
        return NftProfiles[id].creator;
    }

    // STANDART FUNCTIONS ...
    function totalSupply() public view returns (uint256) {
        return _supply.current();
    }

    // just simple test...
    function uri(uint256 UID) public view virtual override returns (string memory) {
        NftProfile memory nft = NftProfiles[UID];
        require( nft.creator != address(0) , "NFT does not exists");

        // user.creator
        return ("ipfs://").toSlice().concat(nft.ipfs.toSlice());
    }

}

