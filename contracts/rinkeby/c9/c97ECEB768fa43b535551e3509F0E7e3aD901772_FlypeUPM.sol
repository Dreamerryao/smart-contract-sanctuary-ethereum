pragma solidity 0.8.10;

import "../../Core/interfaces/IFlypePair.sol";
import "../interfaces/IFlypeRouter02.sol";
import './interfaces/IFlypePairAdapter.sol';
import './interfaces/IFlypeOracleAdapter.sol';
import "@openzeppelin/contracts/access/AccessControl.sol";

contract FlypeUPM is AccessControl{
    string public name;

    address public flypeRouter;
    address public oracleAdapterETH;

    /// @notice pair => pairAdapter
    mapping(address => address) public pairRoute;

    /// @notice LpToken => oracleAdapter
    mapping(address => address) public oracleRouter;

    /// @notice token => oracle
    mapping(address => address[2]) public oracles;

    modifier onlyOwner(){
        require(hasRole(DEFAULT_ADMIN_ROLE, msg.sender));
        _;
    }
    
    constructor() {
        name = "FlypeUPM";
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
    }

    /// @notice Set Flype router
    /// @param _flypeRouter Flype router address
    function setFlypeRouter(address _flypeRouter) external onlyOwner{
                flypeRouter = _flypeRouter;
    }

    /// @notice Set oracle for ether
    /// @param _oracleAdapterETH Oracle address 
    function setOracleAdapterETH(address _oracleAdapterETH ) external onlyOwner {
        oracleAdapterETH = _oracleAdapterETH;
    }

    /// @notice Set oracles for each token in pair
    /// @param lpPair LpToken address
    /// @param token1 Oracle address for token1 in lpPair
    /// @param token2 Oracle address for token2 in lpPair
    function setOracles(address lpPair, address token1, address token2) public onlyOwner {
        oracles[lpPair][0] = token1;
        oracles[lpPair][1] = token2;
    } 

    /// @notice Set pairAdapter for specific pair
    /// @param pair LpToken address
    /// @param adapter Adapter for lpToken
    function setPairAdapter(address pair, address adapter) external onlyOwner{
        pairRoute[pair] = adapter;
    }

    /// @notice Set oracleAdapter for specific lpToken
    /// @param lpPair LpToken address
    /// @param adapter OracleAdapter address
    function setOracleAdapter(address lpPair, address adapter) external onlyOwner{
        oracleRouter[lpPair] = adapter;
    }

    /// @notice Returns price of ether from adapter
    function getPriceETH() external view returns(uint priceETH){
        priceETH = IFlypeOracleAdapter(oracleAdapterETH).getPriceETH();
    }

    /// @notice Returns totalSupply of given lpToken from adapter
    /// @param pair LpToken address
    function totalSupply(address pair) public view returns (uint _totalSupply){
         _totalSupply = IFlypePairAdapter(pairRoute[pair]).totalSupply(pair);
    }

    /// @notice Returns reserves of given pair from adapter
    /// @param pair LpToken address
    function getReserves(address pair) public view returns (uint reserveA, uint reserveB) {
        (reserveA, reserveB) = IFlypePairAdapter(pairRoute[pair]).getReserves(pair);
    }

    /// @notice Returns price of given Flype lpToken
    /// @param lpPair Address of Flype lpToken
    function getPrice(address lpPair) external view returns (uint price) {  
        address lptoken = IFlypePair(lpPair).token0() == IFlypeRouter02(flypeRouter).WETH() ? IFlypePair(lpPair).token1() : IFlypePair(lpPair).token0();
        (uint reserveA, uint reserveB) = getReserves(lptoken);
        (uint priceA, uint priceB) = getPrices(lptoken);
        
        uint _totalSupply = totalSupply(lptoken);
        price = 2 * (sqrt(reserveA * priceA) * sqrt(reserveB * priceB)) / _totalSupply;        
    }

    /// @notice Returns prices of each token in lpPair with getLatestPrice function
    /// @param lpPair LpToken address
    function getPrices(address lpPair) public view returns (uint priceA, uint priceB){
        priceA = uint(IFlypeOracleAdapter(oracleRouter[lpPair]).getLatestPrice(oracles[lpPair][0]));
        priceB = uint(IFlypeOracleAdapter(oracleRouter[lpPair]).getLatestPrice(oracles[lpPair][1]));
    }

    /// @notice Returns square root of a given number
    /// @param y The number from which the square root is taken
    function sqrt(uint y) internal pure returns (uint z) {
        if (y > 3) {
            z = y;
            uint x = y / 2 + 1;
            while (x < z) {
                z = x;
                x = (y / x + x) / 2;
            }
        } else if (y != 0) {
            z = 1;
        }
    }
}

