            taxation: taxation,
            startTime: block.timestamp,
            endTime: endTime,
            title: title,
            description: description,
            amount: amount,
            receiver: receiverAddress,
            creator: msg.sender,
            approvedAmount: 0,
            unapprovedAmount: 0,
            finalResult: false
        });

        emit OpenedMotion(currentMotionId, taxation, msg.sender, block.timestamp, endTime);
    }

    function closeMotion(uint256 _motionId) external {
        // Only creator can close the motion.
        require(_motions[_motionId].creator == msg.sender, "You are not allowed to close this motion");
        _motions[_motionId].status == Status.Close;

        emit ClosedMotion(msg.sender, _motionId);
    }

    function claimMotion(uint256 _motionId) external returns (bool) {
        // Only creator or owner can claim the motion.
        require(_motions[_motionId].creator == msg.sender || msg.sender == owner(), "You are not allowed to claim this motion");

        // Check if motion is open.
        require(_motions[_motionId].status == Status.Open, "Still progressing. Wait more...");

        bool result = _calculateMotion(_motionId);

        if (result) {
            _motions[_motionId].status = Status.Claimable;
            _motions[_motionId].finalResult = true;
        }
        else {
            if (_motions[_motionId].endTime < block.timestamp) {
                _motions[_motionId].status = Status.Close;
            }
        }

        return result;
    }

    function executeMotion(uint256 _motionId) external {
        // Only creator or owner can claim the motion.
        require(_motions[_motionId].creator == msg.sender || msg.sender == owner(), "Not allowed user to execute this motion");
        require(_motions[_motionId].taxation != 0, "This motion is not executable by DAO.");
        require(_motions[_motionId].status == Status.Claimable, "This motion is not allowed to execute.");
        
        uint8 taxation = _motions[_motionId].taxation;
        if (taxation == LEGAL) { // Legal
            uapToken.releaseLegalToken(_motions[_motionId].receiver, _motions[_motionId].amount);
        }
        else if (taxation == LIQUIDITY) { // Liquidity
            uapToken.releaseLiquidityToken(_motions[_motionId].receiver, _motions[_motionId].amount);
        }
        else if (taxation == GRANTANDGIFT) { // Grant and Gift
            uapToken.releaseGrantToken(_motions[_motionId].receiver, _motions[_motionId].amount);
        }
        else if (taxation == INVESTMENT) { // Investment
            uapToken.releaseInvestmentToken(_motions[_motionId].receiver, _motions[_motionId].amount);
        }
        else if (taxation == FUND) { // Fund
            uapToken.releaseGeneralFundToken(_motions[_motionId].receiver, _motions[_motionId].amount);
        }

        emit ExecutedMotion(_motionId, taxation, msg.sender, _motions[_motionId].receiver, _motions[_motionId].amount);
    }

    function _calculateMotion(uint256 _motionId) private view returns (bool) {
        uint256 totalUAPAmount = uapToken.totalSupply();
        uint256 approvalAmount = totalUAPAmount.mul(approvalPercents[_motions[_motionId].taxation]).div(denominator);

        if (approvalAmount >= _motions[_motionId].approvedAmount) {
            return true;
        }
        else {
            return false;
        }
    }
    
    function vote(uint256 _motionId, bool approved) external {
        // Check if user has enough UAP token to vote to the motion.
        uint256 uapAmount = uapToken.balanceOf(msg.sender);
        require(uapAmount >= amountAllowVote, "You are not allow to vote.");
        require(!_voted[msg.sender][_motionId], "You already voted!");

        // Check motion status
        require(_motions[_motionId].status == Status.Open, "Motion is not open");
        require(block.timestamp < _motions[_motionId].endTime, "Motion is over");

        _votes[msg.sender][_motionId] = Vote({
            user: msg.sender,
            motionId: _motionId,
            approved: approved,
            amount: uapAmount
        });

        if (approved) {
            _motions[_motionId].approvedAmount += uapAmount;            
        }
        else {
            _motions[_motionId].unapprovedAmount += uapAmount;
        }

        _voted[msg.sender][_motionId] = true;

        emit Voted(msg.sender, _motionId, approved, uapAmount);
    }

    function viewMotion(uint256 _motionId) external view returns (Motion memory) {
        return _motions[_motionId];
    }

    function viewVote(address account, uint256 _motionId) external view returns (Vote memory) {
        return _votes[account][_motionId];
    }

    function setAmountAllow(uint256 motionAmount, uint256 voteAmount) public onlyOwner {
        amountAllowMotion = motionAmount;
        amountAllowVote = voteAmount;
    }

    function setApprovalAmountPercents(uint256 legalPercent, uint256 liquidityPercent, uint256 grantAndGiftPercent, uint256 investmentPercent, uint256 fundPercent, uint256 otherPercent) public onlyOwner {
        approvalPercents[LEGAL] = legalPercent;
        approvalPercents[LIQUIDITY] = liquidityPercent;
        approvalPercents[GRANTANDGIFT] = grantAndGiftPercent;
        approvalPercents[INVESTMENT] = investmentPercent;
        approvalPercents[FUND] = fundPercent;
        approvalPercents[OTHER] = otherPercent;
    }

    /**
     * @notice It allows the admin to recover wrong tokens sent to the contract
     * @param _tokenAddress: the address of the token to withdraw
     * @param _tokenAmount: the number of token amount to withdraw
     * @dev Only callable by owner.
     */
    function recoverWrongTokens(address _tokenAddress, uint256 _tokenAmount) external onlyOwner {
        require(_tokenAddress != address(uapToken), "Cannot be UAP token");

        IERC20(_tokenAddress).safeTransfer(address(msg.sender), _tokenAmount);

        emit AdminTokenRecovery(_tokenAddress, _tokenAmount);
    }
