error MaxSupply();
error NotACeleb();
error NonExistentTokenURI();
error NotActive();
error WithdrawTransfer();


//ERC721Enumerable, ERC721Burnable
contract CryptoWooks is ERC721, Pausable, Ownable {
    
    using Strings for uint256;
    string public baseURI;
    string public notRevealedUri;
    uint16 public lastTokenRevealed = 0;

    uint256 public constant MAX_WOOKS = 10_000;
    uint256 public currentTokenId = 50;

    mapping(uint8 => bool) public allStarMints;
    uint16 public constant MAX_ALLSTAR = 50;
    uint16 public currentCelebId;

    bool public saleIsActive = false;
    bool public celebsActive = false;

    event Minted(uint256 indexed _id);
    event CelebMinted(uint256 indexed _id);

    constructor(
        string memory _baseURI,
        string memory _initNotRevealedURI
    ) ERC721("CryptoWooks", "cryptowook") {
        baseURI = _baseURI;
        setNotRevealedURI(_initNotRevealedURI);
    }

    function flipSaleState() public onlyOwner {
        saleIsActive = !saleIsActive;
    }

    function flipCelebsActive() public onlyOwner {
        celebsActive = !celebsActive;
    }

    function mintWook(uint numberOfTokens) public payable whenNotPaused {
        if (!saleIsActive) {
            revert NotActive();
        }
        if (numberOfTokens + currentTokenId > MAX_WOOKS) {
            revert MaxSupply();
        }
        for(uint i = 0; i < numberOfTokens; i++) {
            uint256 newTokenId = ++currentTokenId;
            _safeMint(msg.sender, newTokenId);
            emit Minted(newTokenId);
        }
    }

    function mintAllStar(uint8 _index) public payable whenNotPaused {
        if (!celebsActive) {
            revert NotActive();
        }
        if (_index > MAX_ALLSTAR) {
            revert NotACeleb();
        }
        require(allStarMints[_index] == false, "AllStar already minted");
        allStarMints[_index] = true;
        _safeMint(msg.sender, _index);
        emit CelebMinted(_index);
    }

    function pause() public onlyOwner {
        _pause();
    }

    function unpause() public onlyOwner {
        _unpause();
    }

    function revealBatch() public onlyOwner{
        lastTokenRevealed += 2500;
    }

    function setNotRevealedURI(string memory _notRevealedURI) public onlyOwner {
        notRevealedUri = _notRevealedURI;
    }

    function setBaseURI(string memory _newBaseURI) public onlyOwner {
        //"ipfs://QmVGeuipVWgsCNzTvXHx8c1xFSbSvYKVgZZuAxBG71X73g/"
        baseURI = _newBaseURI;
    }

    function tokenURI(uint256 tokenId)
        public
        view
        virtual
        override
        returns (string memory)
    {
        if (ownerOf[tokenId] == address(0)) {
            revert NonExistentTokenURI();
        }
        if (tokenId > lastTokenRevealed) {
            return notRevealedUri;
        }
        return
            bytes(baseURI).length > 0
                ? string(abi.encodePacked(baseURI, tokenId.toString()))
                : "";
    }

    function withdraw(address payable payee) public onlyOwner {
        uint balance = address(this).balance;
        (bool transferTx, ) = payee.call{value: balance}("");
        if (!transferTx) {
            revert WithdrawTransfer();
        }
    }

    /**
    * Set some Wooks aside
    */
    function reserveWooks() public onlyOwner {
        for (uint8 i = 0; i < 100; i++) {
            uint256 newTokenId = ++currentTokenId;
            _safeMint(msg.sender, newTokenId);
            emit Minted(newTokenId);
        }
    }
}

