pragma solidity ^0.8.9;

import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import "@semaphore-protocol/contracts/interfaces/IVerifier.sol";
import "@semaphore-protocol/contracts/base/SemaphoreCore.sol";
import "@semaphore-protocol/contracts/base/SemaphoreGroups.sol";

import "./VoteToken.sol";

contract Manager is SemaphoreCore, SemaphoreGroups, AccessControl {
	using EnumerableSet for EnumerableSet.AddressSet;
	using EnumerableSet for EnumerableSet.UintSet;

    event BallotCreated(uint256 indexed groupId, string ballotName);

	bytes32 public constant CONTROLLER_ROLE = keccak256("CONTROLLER_ROLE");
	// bytes32 public constant DELEGATOR_ROLE = keccak256("DELEGATOR_ROLE");

    // @note "signal" is the candidate
    event VoteCasted(uint256 indexed groupId, bytes32 signal, address indexed candidate);

    event VoteTokenCreated(uint256 indexed tokenIndex, address indexed token);

    event BallotCandidateAdded(uint256 );

	// @dev Manager contract controllers
	EnumerableSet.AddressSet private controllers;

    // @dev Tree depth of merkle tree used for each ballot, to be initialized in constructor
    uint8 public treeDepth;

    // @dev Verifier for ZK-SNARKs
    IVerifier public verifier;

	// @dev List of ballot (names)
	string[] public ballots;

    // @dev Indicate if a ballot is active (available for voting)
    mapping(uint256 => bool) private ballotIsActive;

    // @dev Maps groupId to Vote token address (ie. which vote token can vote for groupId ballot)
    mapping(uint256 => address) public ballotVoteTokens;

    // @dev Ballot's vote candidates (name to address mapping). We make this public because candidates need to be public for voters to vote.
    mapping(uint256 => mapping(bytes32 => address)) public ballotCandidates;

	// @dev Ballot's identity commitments
	mapping(uint256 => EnumerableSet.UintSet) private ballotCommitments;

    // @dev String keys of {ballotCandidates}
    mapping(uint256 => bytes32[]) public ballotCandidatesList;

    // @dev Ballot's casted votes for candidates
    mapping(uint256 => mapping(address => uint256)) private ballotVotes;

    // @dev Ballot's total tally of casted votes
    mapping(uint256 => uint256) private ballotVoteTally;

    // @dev Mapping of ballot ID to bool to determine whether to show ballot votes or not
    mapping(uint256 => bool) private ballotVotesPublic;

    // @dev Deadline of ballots; timestamp in seconds.
    // @note Miners can only cheat by max 900 seconds for `block.timestamp`,
    //       which is most times irrelevant with a longer voting timeframe of ballots.
    mapping(uint256 => uint256) private ballotDeadline;

    // @dev Publicly deployed Vote token (ERC-1155)
    VoteToken voteToken;

    // @dev VoteToken token IDs allowed to vote for a specific ballot
    mapping(uint256 => uint256[]) private ballotVoteTokenIds;

    // @dev Votable ballot IDs of a VoteToken
    mapping(uint256 => uint256[]) private voteTokenBallotIds;

    // @dev More stringent version of {onlyExistBallot}; checks that ballot is exists and is active
    modifier onlyActiveBallot(uint256 groupId) {
        require(checkBallotExists(groupId), "Manager: Ballot doesn't exist!");
        require(ballotIsActive[groupId], "Manager: Ballot is inactive!");
         require(ballotDeadline[groupId] >= block.timestamp, "Manager: Ballot deadline has passed!");
        _;
    }

    // @dev Checks if ballot exists regardless of its active status
    modifier onlyExistBallot(uint256 groupId) {
        require(checkBallotExists(groupId), "Manager: Ballot doesn't exist!");
        _;
    }

    modifier onlyPublicBallotVotes(uint256 groupId) {
        require(ballotVotesPublic[groupId], "Manager: Ballot votes are not public");
        _;
    }

	modifier onlyAdminOrController() {
		if (!hasRole(DEFAULT_ADMIN_ROLE, msg.sender) && !hasRole(CONTROLLER_ROLE, msg.sender)) {
			revert(string(abi.encodePacked("AccessControl: account ", Strings.toHexString(msg.sender), " is missing role Admin or Controller")));
		}
		_;
	}

    constructor(
        uint8 _treeDepth,
        IVerifier _verifier,
        VoteToken _voteToken
    ) {
        treeDepth = _treeDepth;
        verifier = _verifier;
        voteToken = _voteToken;
	    _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
    }

	//
	// Access control
	//

	// @dev Add controller to controllers
	function addController(address account) public onlyAdminOrController {
		require(EnumerableSet.add(controllers, account), "Controller already exists!");
		_grantRole(CONTROLLER_ROLE, account);
	}

	// @dev Remove controller from controllers
	function removeController(address account) public onlyAdminOrController {
		require(EnumerableSet.length(controllers) > 1, "At least one controller has to exist!");
		_revokeRole(CONTROLLER_ROLE, account);
		require(EnumerableSet.remove(controllers, account), "Controller doesn't exist!");
	}

	function getControllers() public view returns (address[] memory) {
		return EnumerableSet.values(controllers);
	}

    //
    // Ballot management
    //

    // @dev Create a new Vote (ballot) for users to vote in
    function createBallot(
        string memory ballotName,
        bool isActive,
        uint256 duration
    ) public onlyRole(CONTROLLER_ROLE) {
        uint256 groupId = getBallotId(ballotName);

        _createGroup(groupId, treeDepth, 0);
	    ballots.push(ballotName);
        ballotIsActive[groupId] = isActive;
        ballotVotesPublic[groupId] = false; // votes are hidden by default
        ballotDeadline[groupId] = block.timestamp + duration;

        emit BallotCreated(groupId, ballotName);
    }

	function getBallots() public view returns (string[] memory) {
		return ballots;
	}

    // @dev Assign vote token ID to the ballot
    // TODO: check that vote token is not in ballot yet
    function addVoteTokenToBallot(uint256 groupId, uint256 tokenId) public onlyRole(CONTROLLER_ROLE) {
        ballotVoteTokenIds[groupId].push(tokenId);
        voteTokenBallotIds[tokenId].push(groupId);
    }

    // @dev Remove vote token ID from the ballot
    // TODO: implement this function, and check that vote token is in ballot
    function removeVoteTokenFromBallot(uint256 groupId, uint256 tokenId) public onlyRole(CONTROLLER_ROLE) {

    }

    // @dev Get ballot's allowed VoteToken tokenIds
    function getBallotVoteTokenIds(uint256 groupId) public view returns (uint256[] memory) {
        return ballotVoteTokenIds[groupId];
    }

    // @dev Get VoteToken's votable ballot IDs
    function getVoteTokenBallotIds(uint256 tokenId) public view returns (uint256[] memory) {
        return voteTokenBallotIds[tokenId];
    }

    // @dev Hashes ballot name into groupId (ballot ID)
    function getBallotId(string memory ballotName) public pure returns (uint256) {
        return uint256(keccak256(abi.encodePacked(ballotName))) >> 8;
    }

    // @dev Check if ballot exists, based on name
    function checkBallotExists(uint256 groupId) public view returns (bool) {
        return getDepth(groupId) != 0; // initialized groupId has depth `treeDepth`
    }

    // @dev Set ballot's deadline to a specific timestamp
    function setBallotDeadline(uint256 groupId, uint256 deadline) public onlyRole(CONTROLLER_ROLE) {
        require(deadline > block.timestamp, "SetBallotDeadline: deadline can't be in the past");
        ballotDeadline[groupId] = deadline;
    }

    // @dev Reset ballot's deadline to current block timestamp + new duration
    function resetBallotDeadline(uint256 groupId, uint256 deadline) public onlyRole(CONTROLLER_ROLE) {
        ballotDeadline[groupId] = block.timestamp + deadline;
    }

    // @dev Extend ballot's deadline
    function extendBallotDeadline(uint256 groupId, uint256 duration) public onlyRole(CONTROLLER_ROLE) {
        ballotDeadline[groupId] = ballotDeadline[groupId] + duration;
    }

    // @dev Get ballot deadline in timestamp seconds
    function getBallotDeadline(uint256 groupId) public view returns (uint256) {
        return ballotDeadline[groupId];
    }

    // @dev Get total votes casted for the ballot
    function getBallotTally(uint256 groupId)
        public
        view
        onlyPublicBallotVotes(groupId)
        returns (uint256)
    {
        return ballotVoteTally[groupId];
    }

    // @dev Get the ballot vote tally of candidate by their address
    function getCandidateTally(uint256 groupId, address candidate)
        public
        view
        onlyPublicBallotVotes(groupId)
        returns (uint256)
    {
        require(candidate != address(0), "GetCandidateTally: Candidate doesn't exist in the ballot");
        return ballotVotes[groupId][candidate];
    }

    // @dev Get the ballot vote tally of candidate by their name
    function getCandidateTallyByName(uint256 groupId, bytes32 name) public view returns (uint256) {
        address candidateAddress = candidateInBallot(groupId, name);
        return getCandidateTally(groupId, candidateAddress);
    }

    //
    // Ballot people management
    //

    // @dev Add member to the ballot, who can vote
    function addMember(uint256 groupId, uint256 identityCommitment) public onlyRole(CONTROLLER_ROLE) {
	    require(EnumerableSet.add(ballotCommitments[groupId], identityCommitment), "Commitment already added!");
        _addMember(groupId, identityCommitment);
    }

	function getBallotMembers(uint256 groupId) public view returns (uint256[] memory) {
		return EnumerableSet.values(ballotCommitments[groupId]);
	}

    // @dev Add candidate to the ballot, who can receive votes.
    // @note Candidate's name must be associated with an address (no zero address).
    function addCandidate(
        uint256 groupId,
        address candidate,
        bytes32 name
    ) public onlyRole(CONTROLLER_ROLE) {
        require(checkBallotExists(groupId), "AddCandidate: Ballot doesn't exist!");
        require(candidate != address(0), "AddCandidate: Invalid candidate address");
        require(ballotCandidates[groupId][name] == address(0), "AddCandidate: Candidate with the same name already exists!");
        ballotCandidates[groupId][name] = candidate;
        ballotCandidatesList[groupId].push(name);
    }

    function getBallotCandidates(uint256 groupId) public view returns (bytes32[] memory) {
        return ballotCandidatesList[groupId];
    }

    function candidateInBallot(uint256 groupId, bytes32 name) public view returns (address) {
        return ballotCandidates[groupId][name];
    }

    //
    // Ballot access control
    //

    function startBallot(uint256 groupId) public onlyRole(CONTROLLER_ROLE) onlyExistBallot(groupId) {
        ballotIsActive[groupId] = true;
    }

    function pauseBallot(uint256 groupId) public onlyRole(CONTROLLER_ROLE) onlyExistBallot(groupId) {
        ballotIsActive[groupId] = false;
    }

    function endBallot(uint256 groupId) public onlyRole(CONTROLLER_ROLE) onlyExistBallot(groupId) {
        ballotIsActive[groupId] = false;
    }

    function showBallotVotes(uint256 groupId) public onlyRole(CONTROLLER_ROLE) onlyExistBallot(groupId) {
        ballotVotesPublic[groupId] = true;
    }

    function hideBallotVotes(uint256 groupId) public onlyRole(CONTROLLER_ROLE) onlyExistBallot(groupId) {
        ballotVotesPublic[groupId] = false;
    }

	function isBallotActive(uint256 groupId) public view onlyExistBallot(groupId) returns (bool) {
		return ballotIsActive[groupId];
	}

    //
    // Ballot functionality
    //

	// @dev Cast user's vote
    function castVote(
        bytes32 vote,
        uint256 nullifierHash,
        uint256 groupId,
        uint256[8] calldata proof
    )
        public
        onlyRole(CONTROLLER_ROLE)
        onlyActiveBallot(groupId)
    {
        // Note: Change-Effect-Interaction pattern

        uint256 root = groups[groupId].root;
        // Verify validity of proof (invalid proof will fail)
        _verifyProof(vote, root, nullifierHash, groupId, proof, verifier);
        // Prevent double-voting (already used nullifierHash will fail)
        _saveNullifierHash(nullifierHash);

        address candidate = ballotCandidates[groupId][vote];
        require(candidate != address(0), "CastVote: Invalid candidate");

	    ballotVoteTally[groupId]++;
        ballotVotes[groupId][candidate]++;
        emit VoteCasted(groupId, vote, candidate);
    }
}

