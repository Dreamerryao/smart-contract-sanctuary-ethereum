pragma solidity 0.8.9;

import "openzeppelin-solidity/contracts/utils/cryptography/SignatureChecker.sol";
import "openzeppelin-solidity/contracts/access/Ownable.sol";
import "./AffiliateRegistryInternal.sol";

contract AffiliateRegistry is AffiliateRegistryInternal, Ownable {
    constructor(
        string memory _projectName,
        uint256 _affiliateShares,
        uint256 _affiliateRegistrationFee
    ) {
        _registerProject(_projectName, msg.sender, _affiliateShares);
        affiliateRegistrationFee = _affiliateRegistrationFee;
    }

    /*------------ External ------------*/

    /*------------ Owner Functions ------------*/
    function setAffiliateRegistrationFee(uint256 _newFee) external onlyOwner {
        affiliateRegistrationFee = _newFee;
    }

    function withdraw() external onlyOwner {
        Address.sendValue(payable(owner()), address(this).balance);
    }

    function batchWhitelist(address[] memory whitelists) external onlyOwner {
        for (uint256 i; i < whitelists.length; i++) {
            _whitelists[whitelists[i]] = true;
        }
    }

    function batchRemoveWhitelist(address[] memory whitelists)
        external
        onlyOwner
    {
        for (uint256 i; i < whitelists.length; i++) {
            _whitelists[whitelists[i]] = false;
        }
    }

    /*------------ Project Functions ------------*/

    function registerProject(string memory projectName, uint256 affiliateShares)
        external
        returns (bytes32 projectId)
    {
        return _registerProject(projectName, msg.sender, affiliateShares);
    }

    function setAffiliateShares(uint256 _affiliateShares, bytes32 _projectId)
        external
    {
        Project storage project = _projects[_projectId];
        require(
            msg.sender == project.owner,
            "AffiliateRegistry: only project owner"
        );
        project.projectShares = _affiliateShares;
    }

    /*------------ Affiliate Functions ------------*/

    function registerAffiliate() external payable {
        require(
            !_affiliates[msg.sender],
            "AffiliateRegistry: already registered"
        );
        if (!_whitelists[msg.sender]) {
            require(
                msg.value == affiliateRegistrationFee,
                "AffiliateRegistry: transfer exact value"
            );
        }
        bytes32 message = _generateMessage(msg.sender);
        _affiliates[msg.sender] = true;
        _messages[msg.sender] = message;
        emit AffiliateRegistered(msg.sender, message);
    }

    /*------------ View ------------*/

    function isWhitelisted(address _address) external view returns (bool) {
        return _whitelists[_address];
    }

    function getProjectId(string memory _projectName, address _projectOwner)
        external
        view
        returns (bytes32 projectId)
    {
        return _generateProjectId(_projectName, _projectOwner);
    }

    function projectExists(bytes32 projectId)
        external
        view
        returns (bool exists)
    {
        return _projects[projectId].owner != address(0);
    }

    function getProjectDetails(bytes32 projectId)
        external
        view
        returns (Project memory project)
    {
        return _projects[projectId];
    }

    function getAffiliateShareValue(
        bytes memory signature,
        address affiliate,
        bytes32 projectId,
        uint256 value
    ) external view returns (bool _isAffiliate, uint256 _shareValue) {
        return
            isAffiliate(affiliate) && verifyAffiliate(signature, affiliate)
                ? (
                    true,
                    _calculateShareValue(
                        value,
                        _projects[projectId].projectShares
                    )
                )
                : (false, 0);
    }

    function getAffiliateMessage(address _affiliate)
        external
        view
        returns (bytes32 message)
    {
        return _messages[_affiliate];
    }

    function verifyAffiliate(bytes memory signature, address _affiliate)
        public
        view
        returns (bool)
    {
        return
            SignatureChecker.isValidSignatureNow(
                _affiliate,
                keccak256(
                    abi.encodePacked(
                        "\x19Ethereum Signed Message:\n32",
                        _messages[_affiliate]
                    )
                ),
                signature
            );
    }

    function isAffiliate(address _affiliate) public view returns (bool) {
        return _affiliates[_affiliate];
    }
}

