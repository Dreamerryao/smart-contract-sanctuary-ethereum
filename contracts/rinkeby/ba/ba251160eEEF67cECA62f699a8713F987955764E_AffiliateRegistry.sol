pragma solidity 0.8.9;

import "./AffiliateRegistryStorage.sol";

contract AffiliateRegistryInternal is AffiliateRegistryStorage {
    /// @notice Registers a new project
    /// @dev registers a project and emit event
    /// @param projectName project name
    /// @param projectOwner address of project representative or owner
    /// @param shares affiliate shares for the project
    /// @return projectId returns a unique bytes32 hash for project identification
    function _registerProject(
        string memory projectName,
        address projectOwner,
        uint256 shares
    ) internal virtual returns (bytes32 projectId) {
        projectId = _generateProjectId(projectName, projectOwner);
        require(
            _projects[projectId].owner == address(0),
            "AffiliateRegistry: project exists"
        );
        _projects[projectId] = Project(projectOwner, shares);
        emit ProjectRegistered(projectId, projectOwner);
    }

    /// @notice calculates value share for the given value and percentage share
    /// @dev calculates percentage share for the given value
    /// @param value total value
    /// @param shares share percentage, with 10^18 precision, eg. 1% -> 0.01 ether or 1^16 or parseUnits("1",16)
    /// @return shareValue share value
    function _calculateShareValue(uint256 value, uint256 shares)
        internal
        pure
        returns (uint256 shareValue)
    {
        return (value * shares) / HUNDRED_PERCENT;
    }

    /// @notice This method generates a unique project id
    /// @dev It creates hash by encoding contant prefix, string and address for project identification
    /// @param projectName project name
    /// @param projectOwner address of project representative or owner
    /// @return projectId returns a unique bytes32 hash for project identification
    function _generateProjectId(string memory projectName, address projectOwner)
        internal
        view
        virtual
        returns (bytes32 projectId)
    {
        return keccak256(abi.encode(PROJECT_PREFIX, projectName, projectOwner));
    }

    /// @notice This method generates a message that will be signed by affiliate to generate affiliate url
    /// @dev It creates hash by encoding contant prefix, address and current block number
    /// @param _affiliate address of affiliate
    /// @return message returns a unique bytes32 hash which can be signed by affiliate to generate affiliate url
    function _generateMessage(address _affiliate)
        internal
        view
        virtual
        returns (bytes32 message)
    {
        return
            keccak256(
                abi.encode(
                    AFFILIATE_MESSAGE_PREFIX,
                    _affiliate,
                    keccak256(abi.encode(block.number))
                )
            );
    }
}

