            require(exists(equipTypeArr, _equipType) == 999, "Equip Type duplicated!");

            equipTypeArr[i] = _equipType;

            //如果本來有該部位，則除舊換新
            uint index = exists(_characterEquipTypes[tokenIdOfChar], _equipType);
            if (index != 999) {
                _safeTransferFrom(address(this), msg.sender, _characterEquips[tokenIdOfChar][index], 1, "");
                delete _characterEquips[tokenIdOfChar][index];
                delete _characterEquipTypes[tokenIdOfChar][index];
            }
            _characterEquips[tokenIdOfChar].push(_tokenId);
            _characterEquipTypes[tokenIdOfChar].push(_equipType);
            _safeTransferFrom(msg.sender, address(this), _tokenId, 1, "");
        }
    }

