        _updateSolvency( (address(this).balance - amountInWeis) ); // Updates the solvency value of the contract.
        _updateProfit(amountInWeis, true);                // Increase the profit value.
        payable(owner()).transfer(amountInWeis); // Sends the Ether to owner address.
    }

