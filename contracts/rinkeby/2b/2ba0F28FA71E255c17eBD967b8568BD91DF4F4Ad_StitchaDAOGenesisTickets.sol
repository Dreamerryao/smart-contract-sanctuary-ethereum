contract StitchaDAOGenesisTickets is ERC1155, Ownable, PaymentSplitter {
    using Counters for Counters.Counter;

    Counters.Counter private _tokenIdCounter;
    Counters.Counter private _silverTicketCounter;
    Counters.Counter private _goldTicketCounter;
    Counters.Counter private _diamondTicketCounter;

    address public votesContract;
    address public wEthTokenAddress;

    uint256 public constant SILVER_TICKET = 3;
    uint256 public constant GOLD_TICKET = 2;
    uint256 public constant DIAMOND_TICKET = 1;

    uint256 public constant SILVER_LIMIT = 300;
    uint256 public constant GOLD_LIMIT = 700;
    uint256 public constant DIAMOND_LIMIT = 111;

    uint256 public constant SILVER_VOTES = 25e18;
    uint256 public constant GOLD_VOTES = 50e18;
    uint256 public constant DIAMOND_VOTES = 100e18;

    // MATIC mint prices
    uint256 public silverMaticPrice = 150 ether;
    uint256 public goldMaticPrice = 300 ether;
    uint256 public diamondMaticPrice = 600 ether;
    // WETH mint prices
    uint256 public silverWETHPrice = 0.1 ether;
    uint256 public goldWETHPrice = 0.2 ether;
    uint256 public diamondWETHPrice = 0.4 ether;

    address payable treasurer;
    address payable private devWallet;
    string private contractUri;

    event Mint(address to, uint256 tokenId);

    constructor(
        address votesContractAddress_,
        address wEthTokenAddress_,
        string memory contractUri_,
        string memory metadataUri_,
        address[] memory payees_,
        uint256[] memory shares_
    ) ERC1155(metadataUri_) PaymentSplitter(payees_, shares_) {
        votesContract = votesContractAddress_;
        wEthTokenAddress = wEthTokenAddress_;

        contractUri = contractUri_;

        address ownerAddr = payees_[0];
        Ownable.transferOwnership(ownerAddr);
        preMint();
    }

    function name() public pure returns (string memory) {
        return "Stitchia DAO Genesis Tickets";
    }

    function symbol() public pure returns (string memory) {
        return "SNT";
    }

    function contractURI() public view returns (string memory) {
        return contractUri;
    }

    function setContractUri(string memory newUri) public onlyOwner {
        contractUri = newUri;
    }

    function setURI(string memory newUri) public onlyOwner {
        _setURI(newUri);
    }

    // pre-issue some tickets to be available on OpenSea marketplace
    function preMint() private {
        for (uint256 i = 0; i < 70; i++) {
            _mint(owner(), SILVER_TICKET, 1, "");
            incrementCounters(SILVER_TICKET);
        }
        for (uint256 i = 0; i < 110; i++) {
            _mint(owner(), GOLD_TICKET, 1, "");
            incrementCounters(GOLD_TICKET);
        }
        for (uint256 i = 0; i < 20; i++) {
            _mint(owner(), DIAMOND_TICKET, 1, "");
            incrementCounters(DIAMOND_TICKET);
        }
    }

    // tokens mint handler
    function issueToken(address account, uint256 id) private {
        _mint(account, id, 1, "");
        incrementCounters(id);
        StitchiaDAOGenesisVotes votes = StitchiaDAOGenesisVotes(votesContract);
        votes.mint(account, getTokenIdVotes(id));
    }

    // mint using MATIC
    function mint(address account, uint256 id) public payable {
        (bool ok, string memory reason) = canMint(account, id);
        require(ok, reason);
        require(msg.value >= getMATICTokenPrice(id), "No enough funds sent'");

        issueToken(account, id);

        emit Mint(account, id);
    }

    // mint using WETH
    function mintWithEth(address account, uint256 id) external {
        (bool ok, string memory reason) = canMint(account, id);
        require(ok, reason);
        IERC20 erc20Contract = IERC20(wEthTokenAddress);
        bool success = erc20Contract.transferFrom(account, address(this), getWETHTokenPrice(id));
        require(success, "Failed to transfer funds");

        issueToken(account, id);

        emit Mint(account, id);
    }

    // check if can be obtained
    function canMint(address account, uint256 id) private view returns (bool, string memory) {
        if (!requireNilBalance(account)) {
            return (false, "User already is a token owner");
        }

        if (id < DIAMOND_TICKET && id > SILVER_TICKET) {
            return (false, "Invalid token ID");
        }

        if (!checkTokenSupply(id)) {
            return (false, "Token ID limit exceed");
        }

        return (true, "");
    }

    // increment token tier supply by token id
    function incrementCounters(uint256 tokenId) private {
        _tokenIdCounter.increment();
        if (tokenId == SILVER_TICKET) {
            _silverTicketCounter.increment();
        } else if (tokenId == GOLD_TICKET) {
            _goldTicketCounter.increment();
        } else if (tokenId == DIAMOND_TICKET) {
            _diamondTicketCounter.increment();
        }
    }

    // get token voting power depending on its type
    function getTokenIdVotes(uint256 id) public pure returns (uint256) {
        return id == SILVER_TICKET ? SILVER_VOTES :
            id == GOLD_TICKET ? GOLD_VOTES : DIAMOND_VOTES;
    }

    // get tokenPrice depending on its type
    function getMATICTokenPrice(uint256 id) public view returns (uint256) {
        return id == SILVER_TICKET ? silverMaticPrice :
            id == GOLD_TICKET ? goldMaticPrice : diamondMaticPrice;
    }
    function getWETHTokenPrice(uint256 id) public view returns (uint256) {
        return id == SILVER_TICKET ? silverWETHPrice :
            id == GOLD_TICKET ? goldWETHPrice : diamondWETHPrice;
    }

    // checks if specified token id may be minted
    function checkTokenSupply(uint256 id) public view returns (bool) {
        if (id == SILVER_TICKET) {
            return silverTicketsSupply() < SILVER_LIMIT;
        } else if (id == GOLD_TICKET) {
            return goldTicketsSupply() < GOLD_LIMIT;
        } else if (id == DIAMOND_TICKET) {
            return diamondTicketsSupply() < DIAMOND_LIMIT;
        }

        return false;
    }

    // require that account not owns any of tokens
    function requireNilBalance(address to) internal view returns (bool) {
        bool noSilver = balanceOf(to, SILVER_TICKET) == 0;
        bool noGold = balanceOf(to, GOLD_TICKET) == 0;
        bool noPlatinum = balanceOf(to, DIAMOND_TICKET) == 0;

        return noSilver && noGold && noPlatinum;
    }

    // total supply of tickets must not exceed 1111
    function totalSupply() public view returns (uint256) {
        return _tokenIdCounter.current();
    }

    // returns current amount of silver tier tickets
    function silverTicketsSupply() public view returns (uint256) {
        return _silverTicketCounter.current();
    }

    // returns current amount of gold tier tickets
    function goldTicketsSupply() public view returns (uint256) {
        return _goldTicketCounter.current();
    }

    // returns current amount of diamond tier tickets
    function diamondTicketsSupply() public view returns (uint256) {
        return _diamondTicketCounter.current();
    }

    // override the original transfer methods

    function safeTransferFrom(
        address from,
        address to,
        uint256 id,
        uint256 amount,
        bytes memory data
    ) public virtual override {
        require(requireNilBalance(to), "User already is a token owner");
        _safeTransferFrom(from, to, id, amount, data);
        StitchiaDAOGenesisVotes votes = StitchiaDAOGenesisVotes(votesContract);
        votes.burn(from, getTokenIdVotes(id));
        votes.mint(to, getTokenIdVotes(id));
    }

    function safeBatchTransferFrom(
        address from,
        address to,
        uint256[] memory ids,
        uint256[] memory amounts,
        bytes memory data
    ) public virtual override {
        require(ids.length == 1, "Can only transfer one token");
        require(amounts.length == 1, "Can only transfer one token");
        safeTransferFrom(from, to, ids[0], amounts[0], data);
    }
}

