pragma solidity ^0.8.0;

import "./NFT/ERC721.sol";
import "./NFT/extensions/ERC721Enumerable.sol";
import "./NFT/extensions/ERC721URIStorage.sol";
import "./NFT/extensions/ERC721Burnable.sol";
import "./NFT/access/AccessControl.sol";
import "./NFT/utils/Counters.sol";

/**
 * @title NonFungibleToken contract
 *
 * @dev Extends ERC721 non-fungible token standard
 */
contract NonFungibleToken is ERC721, ERC721Enumerable, ERC721URIStorage, ERC721Burnable, AccessControl {
    receive() external payable {}
    fallback() external payable {}

    using Counters for Counters.Counter;
    Counters.Counter private _tokenIdCounter;

    uint256 public value = 0 ether;

    constructor() ERC721("Non-Fungible Token", "NFT") {
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
    }

    function setValue(uint256 _value) public onlyRole(VALUE_ROLE) {
        value = _value;
    }

    function mint(address account, string memory URI) public payable {
        require(msg.value >= value);
        _safeMint(account, _tokenIdCounter.current());
        _setTokenURI(_tokenIdCounter.current(), URI);
        _tokenIdCounter.increment();
    }

    function balance() public view returns (uint256) {
        return address(this).balance;
    }

    function withdraw() public onlyRole(WITHDRAW_ROLE) {
        (bool success, ) = payable(msg.sender).call{value: balance()}("");
        require(success, "Ether transfer failed.");
    }

    // The following functions are overrides required by Solidity

    function _beforeTokenTransfer(address from, address to, uint256 tokenId)
        internal
        override(ERC721, ERC721Enumerable)
    {
        super._beforeTokenTransfer(from, to, tokenId);
    }

    function _burn(uint256 tokenId)
        internal
        override(ERC721, ERC721URIStorage)
    {
        super._burn(tokenId);
    }

    function tokenURI(uint256 tokenId)
        public
        view
        override(ERC721, ERC721URIStorage)
        returns (string memory)
    {
        return super.tokenURI(tokenId);
    }

    function supportsInterface(bytes4 interfaceId)
        public
        view
        override(ERC721, ERC721Enumerable, AccessControl)
        returns (bool)
    {
        return super.supportsInterface(interfaceId);
    }
}

