    event Purchase(address indexed to, uint256 id);

    event Claim(address indexed to, uint256 amount);
    
    constructor(address _DBN, address _PBOX, address _WETH, IPrice _price) {
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(BURNER_ROLE, msg.sender);

        DBN = _DBN; 
        PBOX = _PBOX;
        WETH = _WETH;
        priceContract = _price; 

        levelInfo[1].price = 5500 * 10**18;
        levelInfo[1].totalReceivable = 7500 * 10**18;
        levelInfo[1].perDayPayout =  75 * 10**18;
        
        levelInfo[2].price = 2750 * 10**18;
        levelInfo[2].totalReceivable = 3600 * 10**18;
        levelInfo[2].perDayPayout = 36 * 10**18;
        
        levelInfo[3].price = 1650 * 10**18;
        levelInfo[3].totalReceivable = 2000 * 10**18;
        levelInfo[3].perDayPayout = 20 * 10**18;
        
        levelInfo[4].price = 1100 * 10**18;
        levelInfo[4].totalReceivable = 1300 * 10**18;
        levelInfo[4].perDayPayout = 13 * 10**18;
        
        levelInfo[5].price = 550 * 10**18;
        levelInfo[5].totalReceivable = 600 * 10**18;
        levelInfo[5].perDayPayout = 6 * 10**18;
    }

    function basePrice(uint256 _level) public view returns(uint256) {
        require(_level > 0 && _level < 6, "invalid level id"); 
        uint256 ethPrice = priceContract.pboxToEth(levelInfo[_level].price);
        return ethPrice;
    }
   
    function getClaimable(address to, uint256 _level) public view returns (uint256) {
        require(_level > 0 && _level < 6, "invalid level id");  
        return userPurchase[to][_level].totalClaimable;
    }

    function getAllClaimable(address to) public view returns (uint256[] memory) {
        uint256[] memory allClaims = new uint256[](5) ;
        for (uint256 i = 0; i < 5; i++) {
            allClaims[i] = getClaimable(to, i+1);
        }
        return allClaims;
    }
    
    function purchase(uint256 _level) public payable {
        require(_level > 0 && _level < 6, "invalid level id");  
        require(userPurchase[msg.sender][_level].lastClaimTime == 0, "level already purchased");
        uint256 price = basePrice(_level); 
        require(msg.value >= price, "not enough ethers");
        uint256 burnAmount = price.mul(burnTax).div(100);
        if (burnAmount > 0) {
            uint256 pboxTokens = swap(burnAmount);
            //IPBOX(PBOX).burn(pboxTokens); //old
            addBurnAmountPBOX(pboxTokens);
            IPresale(presale).addBurnAmount(pboxTokens);
        }
        uint256 treasuryAmount = price.mul(treasuryTax).div(100);
        if (treasuryAmount > 0) {
            (bool sent1, ) = treasury.call{value: treasuryAmount }("");
            require(sent1, "Failed to manage Ether");
        }
        uint256 finalAmount = price.sub(burnAmount).sub(treasuryAmount);
        (bool sent2, ) = buyBack.call{value: finalAmount}("");
        require(sent2, "Failed to manage Ether");

        userPurchase[msg.sender][_level].totalClaimable = levelInfo[_level].totalReceivable;
        userPurchase[msg.sender][_level].lastClaimTime = block.timestamp;
        mintTokens(levelInfo[_level].totalReceivable);
        emit Purchase(msg.sender, _level);
    }
    
    function claim(uint256 _level) public { 
        uint256 timeDiff = (block.timestamp).sub(userPurchase[msg.sender][_level].lastClaimTime);
        uint256 claimCount = timeDiff / 10 minutes; //for testing
        uint256 claimAmount = claimCount * levelInfo[_level].perDayPayout;
        if (claimAmount > userPurchase[msg.sender][_level].totalClaimable)
            claimAmount = userPurchase[msg.sender][_level].totalClaimable;
        require(claimAmount != 0, "nothing to claim");
        userPurchase[msg.sender][_level].claimed = userPurchase[msg.sender][_level].claimed.add(claimAmount);
        userPurchase[msg.sender][_level].totalClaimable = userPurchase[msg.sender][_level].totalClaimable.sub(claimAmount);
        userPurchase[msg.sender][_level].lastClaimTime = block.timestamp;
        IERC20(DBN).transfer(msg.sender, claimAmount);
        emit Claim(msg.sender, claimAmount);
    }
     
    function claimAll() public {
        for (uint256 i = 1; i < 6; i++) {
            uint256 amountToClaim = userPurchase[msg.sender][i].totalClaimable;
            if (amountToClaim > 0)
                claim(i);
        }
    }

    function mintTokens(uint256 _amount) internal {
        IPBOX(PBOX).mint(presale, _amount);
        IDBN(DBN).mint(address(this), _amount);
    }

    function swap(uint256 _amount) public returns (uint256) {
        address[] memory path = new address[](2);
        path[0] = WETH;
        path[1] = PBOX;
        uint256[] memory tokens = IRouter(router).swapExactETHForTokens{value: _amount}(0, path, address(this), block.timestamp);
        return tokens[1];
    }

    function setTreasury(address _treasury) public onlyRole(DEFAULT_ADMIN_ROLE) {
        treasury = _treasury;
    }

    function setPurchaseTaxes(uint256 _treasuryTax, uint256 _burnTax) public onlyRole(DEFAULT_ADMIN_ROLE) {
        treasuryTax = _treasuryTax;
        burnTax = _burnTax;
    }

    function setBuyBackTax(uint256 _buyBackTax) public onlyRole(DEFAULT_ADMIN_ROLE) {
        buyBackTax = _buyBackTax;
    }

    function setBuyBack(address _buyBack) public onlyRole(DEFAULT_ADMIN_ROLE) {
        buyBack = _buyBack;
    }

    function setPresale (address _presale) public onlyRole(DEFAULT_ADMIN_ROLE) {
        presale = _presale;
    }

    function setRouter (address _router) public onlyRole(DEFAULT_ADMIN_ROLE) {
        router = _router;
    }
    
    function setTokens(address _DBN, address _PBOX, address _WETH) public onlyRole(DEFAULT_ADMIN_ROLE) {
        DBN = _DBN;
        PBOX = _PBOX;
        WETH = _WETH;
    }

    function addBurnAmountPBOX(uint256 amount) internal {
        pboxBurnAmount = pboxBurnAmount.add(amount);
    }

    function burnAccumulate(uint256 amount) public onlyRole(BURNER_ROLE) {
        require(amount > 0 && amount <= pboxBurnAmount);
        IPBOX(PBOX).burn(amount);
    }
}