struct Bid {
    address account;
    uint256 amount;
    uint256 timestamp;
}

struct Auction {
    uint256 startDate;
    uint256 endDate;
    Bid lastBid;
}

/**
 * @dev An auction house for ERC721 tokens.
 */
contract AuctionHouse is IERC721Receiver, Ownable {

    /** The token contract for auctions */
    ERC721Enumerable token;
    /** @dev Number of auctions currently active. */
    uint256 public activeAuctionsCount;
    /** @dev Whether auction activation is paused. */
    bool public areNewAuctionsPaused;
    /** @dev Minimum ETH amount by which each new bid must be incremented by */
    uint256 public minimumBidRaise = 0.001 ether;
    /** @dev Time in seconds representing the auction duration */
    uint256 public auctionDuration = 24 hours;
    /** @dev Time in seconds representing the amount of time that the auction
             can be extended by if a big happens within the same last amount
             of time during the auction. */
    uint256 public auctionBidExtension = 10 minutes;
    /** @dev The amount of time the winning bid has to claim their token
             until anyone can claim it. This is needed for security
             measures against abuse. Anyone can claim for the winner. */
    uint256 public winningBidClaimExpiry = 7 days;
    /** @dev Mapping from token ID to Auction struct */
    mapping(uint256 => Auction) public auctions;

    event Claim(address indexed account, uint256 tokenId);
    event NewAuction(uint256 indexed tokenId);
    event NewBid(
        uint256 indexed tokenId,
        address indexed account,
        uint256 value
    );
    event AuctionsPausedStatusChange(bool value);
    event AuctionDurationChange(uint256 value);
    event AuctionBidExtensionChange(uint256 value);
    event MinimumBidRaiseChange(uint256 value);
    event ClaimExpiryChange(uint256 value);

    constructor(address tokenAddress) {
        assert(tokenAddress != address(0));
        token = ERC721Enumerable(tokenAddress);
    }
    
    function setAreNewAuctionPaused(bool value) external onlyOwner {
        areNewAuctionsPaused = value;
        emit AuctionsPausedStatusChange(value);
    }
    
    function setAuctionDuration(uint256 durationSeconds) external onlyOwner {
        auctionDuration = durationSeconds;
        emit AuctionDurationChange(durationSeconds);
    }
    
    function setAuctionBidExtension(uint256 extensionSeconds) external onlyOwner {
        auctionBidExtension = extensionSeconds;
        emit AuctionBidExtensionChange(extensionSeconds);
    }
    
    function setMinimumBidRaise(uint256 newMinimumBidRaise) external onlyOwner {
        minimumBidRaise = newMinimumBidRaise;
        emit MinimumBidRaiseChange(newMinimumBidRaise);
    }
    
    function setWinningBidClaimExpiry(uint256 expirySeconds) external onlyOwner {
        winningBidClaimExpiry = expirySeconds;
        emit ClaimExpiryChange(expirySeconds);
    }

    /**
     * @dev Activates auction for a token held by the contract.
     * @param tokenId The token ID to be auctioned.
     */
    function auction(uint256 tokenId) public {
        assert(!areNewAuctionsPaused);
        assert(token.ownerOf(tokenId) == address(this));
        assert(!isAuctionActive(tokenId));
        // Create new Auction struct and assign to it, which
        // ensures the memory is fully cleared, in case the
        // token is being auctioned for the second time.
        Auction memory auction;
        auction.startDate = block.timestamp;
        auctions[tokenId] = auction;
        activeAuctionsCount++;
        emit NewAuction(tokenId);
    }

    /**
     * @dev Places a bid on an auction for tokenId using Ether.
     * @param tokenId The tokenId for the auction.
     */
    function bid(uint256 tokenId) external payable {
        assert(isAuctionActive(tokenId));
        Auction storage auction = auctions[tokenId];
        uint256 minimumBid = auction.lastBid.amount + minimumBidRaise;
        assert(msg.value > minimumBid);
        // Return funds to last bidder if this is not the first bid.
        address lastBidder = auction.lastBid.account;
        if (lastBidder != address(0)) {
            (bool success, ) = lastBidder
                .call{value: auction.lastBid.amount}("");
            assert(success);
        }
        // Write new bid.
        auction.lastBid = Bid({
            account: msg.sender,
            amount: msg.value,
            timestamp: block.timestamp
        });
        emit NewBid(tokenId, msg.sender, msg.value);
    }

    /**
      * @dev Claims the auctioned token for the winning bidder.
      *      Anyone may call this function. If the claim period
      *      given by the winningClaimExpiry bid passes, the account
      *      calling this function will receive the token instead of
      *      the winning bidder.
      */
    function claim(uint256 tokenId) external {
        Auction storage auction = auctions[tokenId];
        assert(auction.startDate != 0);
        assert(auction.endDate == 0);
        uint256 endDate = getAuctionEndDate(
            auction.startDate,
            auctionDuration,
            auction.lastBid.timestamp,
            auctionBidExtension,
            block.timestamp
        );
        // Assert that the auction has ended.
        assert(block.timestamp >= endDate);
        uint256 bidderClaimDeadline = auction.lastBid.timestamp
            + winningBidClaimExpiry;
        address claimer = block.timestamp <= bidderClaimDeadline
            ? auction.lastBid.account
            : msg.sender;
        // End the auction and transfer claimed token.
        auction.endDate = endDate;
        token.safeTransferFrom(address(this), claimer, tokenId);
        // Send the winning bid value to the owner.
        (bool success, ) = owner().call{value: auction.lastBid.amount}("");
        assert(success);
        emit Claim(claimer, tokenId);
    }

    /**
     * @dev Returns whether the auction is active for tokenId.
     * @param tokenId The tokenId for the auction.
     */
    function isAuctionActive(uint256 tokenId) public view returns(bool) {
        uint256 startDate = auctions[tokenId].startDate; 
        if (startDate == 0)
            return false;
        uint256 endDate = getAuctionEndDate(
            startDate,
            auctionDuration,
            auctions[tokenId].lastBid.timestamp,
            auctionBidExtension,
            block.timestamp
        );
        return (
            auctions[tokenId].startDate != 0 &&
            auctions[tokenId].endDate == 0 &&
            block.timestamp < endDate
        );
    }

    /**
      * @dev Returns the current auction end date. This date may only
      *      change at the final moments of the auction depending on the
      *      last bids and the auctionBidExtension variable due to the
      *      auction extension mechanism.
      *      THIS IS INCLUSIVE. If the block timestamp ever reaches the
      *      value returned by this function, the auction has ended.
      */
    function getAuctionEndDate(
        uint256 auctionStartDate,
        uint256 auctionDuration,
        uint256 bidTimestamp,
        uint256 auctionBidExtension,
        uint256 blockTimestamp
    ) public pure returns(uint256) {
        assert(auctionStartDate != 0);
        uint256 nonExtendedEndDate = auctionStartDate + auctionDuration;
        if (blockTimestamp <= nonExtendedEndDate) return nonExtendedEndDate;
        // At this point, auction must have been extended at least one time.
        uint256 extraAuctionTime = blockTimestamp - nonExtendedEndDate;
        uint256 extensionCount = extraAuctionTime % auctionBidExtension;
        uint256 extensionTimeLeft = ((extensionCount + 1) * auctionBidExtension)
            - extraAuctionTime;
        return nonExtendedEndDate + extensionTimeLeft;
    }

    /**
     * @dev Handles incoming ERC721 transfers and new auctions.
     */
    function onERC721Received(
        address operator,
        address from,
        uint256 tokenId,
        bytes calldata data
    ) external override returns (bytes4) {
        // Reject token transfers from other NFTs.
        if (msg.sender != address(token)) return 0;
        // Check that the token has indeed been received.
        assert(token.ownerOf(tokenId) == address(this));
        // FUCKING AUCTION IT MOTHERFUCKER.
        auction(tokenId);
        return IERC721Receiver.onERC721Received.selector;
    }
}

