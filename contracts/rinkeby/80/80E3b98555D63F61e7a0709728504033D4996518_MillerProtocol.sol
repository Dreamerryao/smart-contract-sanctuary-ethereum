pragma solidity ^0.8.2;

import "./BurnIERC20.sol";
import "@openzeppelin/contracts/interfaces/IERC721.sol";
import "@openzeppelin/contracts/token/ERC721/utils/ERC721Holder.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";
import "@openzeppelin/contracts/utils/Strings.sol";


contract MillerProtocol is Ownable, ReentrancyGuard, ERC721Holder {
  
    using SafeERC20 for IERC20;

    /* ========== STATE VARIABLES ========== */
    BurnIERC20 public stakingToken;
    IERC721 public nftCollection;
    uint256 private tierOneRewardRate = 0.00002314815 * 10 ** 18;
    uint256 private tiertwoRewardRate = 0.00001736111* 10 ** 18;
    uint256 private tierThreeRewardRate = 0.00001388889 * 10 ** 18;
    uint256 private tierFourRewardRate = 0.00001157407 * 10 ** 18;
    uint256 private devRewardRate = 0.00000868056 * 10 ** 18;
    uint256 private minDelegateAmount = 100 * 10 ** decimals();
    uint256 private minDevMillAmount = 50 * 10 ** decimals();
    mapping(address => uint) private _balances;
    uint256 public burnFactor = 2;
    bytes32 public NFTMerkleRoot;
    mapping(address => uint) public userRewardRate;
    mapping(address => uint) public multiplier;
    string public tobedeleted;
    
    
    uint public lastUpdateTime;
    uint public rewardPerTokenStored;

    mapping(address => uint256) public userRewardPerTokenPaid;
    mapping(address => uint256) public rewards;

    mapping(address => bool) public isNFTStaked;
    mapping(address => uint256) public nftTokenId;

    mapping(address => bool) public isUserDelegating;
    mapping(address => bool) public isSubGraphDev;

    function addToDelgateList() internal  {
        if (isUserDelegating[msg.sender] == false){
            isUserDelegating[msg.sender] = true;
        }
    }

    function addToDevList() internal {
        if (isSubGraphDev[msg.sender] == false){
            isSubGraphDev[msg.sender] = true;
        }
    }

    address public signer = 0x8F52F789DD7aaC4cdA4d7BeE8d4566bc0b224dc6;
    /* ========== STRUCTS ========== */

    struct SubGraphInfo{
        string id;
        string name;
        string url;
        string description;
        address owner;
        uint256 balances;
    }

    SubGraphInfo[] public subGraphInfo;
    mapping (address => SubGraphInfo[]) public listOfUserSubGraph;

    /* ========== EVENTS ========== */

    event StakeNFT(address indexed user, uint256 tokenId);
    event StakedTokens(address indexed user, uint256 amount);
    event UnstakeNFT(address indexed user, uint256 tokenId);
    event RewardPaid(address indexed user, uint256 amount);
    event AddSubGraph(address indexed user, string gid);

    /* ========== CONSTRUCTOR ========== */

    constructor(address _stakingToken, address _nftCollection) {
        stakingToken = BurnIERC20(_stakingToken);
        nftCollection = IERC721(_nftCollection);
    }

    /* ========== ACCESS CONTROL/SANITY MODIFIERS ========== */

    modifier isCorrectDevMillBalance() {
        require(
            stakingToken.balanceOf(msg.sender) >= minDevMillAmount,
            "Minimum MILL token amount required not met"
        );
        _;
    }

     modifier isCorrectMillBalance(uint256 amount) {
        require(
            stakingToken.balanceOf(msg.sender) >= minDelegateAmount * amount,
            "Insufficient MILL token balance"
        );
        _;
    }

    modifier isStakingNFT() {
        require(
            isNFTStaked[msg.sender] == true, "A Miller NFT must be staked first");
        _;
    }

     modifier isNotStakingNFT() {
        require(
            isNFTStaked[msg.sender] == false, "You have aleready staked a Miller NFT");
        _;
    }

    modifier isNFTOwner(uint256 tokenId){
        require(nftCollection.ownerOf(tokenId) == (msg.sender), "User must be owner of the NFT");
        _;
    }

    modifier setDelegateMultiplier(uint256 amount){
        multiplier[msg.sender] += amount;
        _;
    }

     modifier setDevMultiplier(){
        multiplier[msg.sender] += 1;
        _;
    }

    modifier setDevRewardRate(){
        userRewardRate[msg.sender] = devRewardRate;
        _;
    }
    modifier setUserRewardRate(uint256 nftTier){
        userRewardRate[msg.sender] = getRewardRate(nftTier);
        _;
    }

     modifier setBalances(){
        _balances[msg.sender] = 1;
        _;
    }

    modifier isValidMerkleProof(bytes32[] calldata merkleProof, uint256 tokenId, uint256 tier) {
        string memory data = string(abi.encodePacked(Strings.toString(tokenId), Strings.toString(tier)));
        tobedeleted = data;
        require(
            MerkleProof.verify(
                merkleProof,
                NFTMerkleRoot,
                keccak256(abi.encodePacked(data))
            ),
            "Address does not exist in list"
        );
        _;
    }

     modifier updateReward(address account) {
        rewardPerTokenStored = rewardPerToken(account);
        lastUpdateTime = block.timestamp;
        rewards[account] = earned(account);
        userRewardPerTokenPaid[account] = rewardPerTokenStored;
        _;
    }

    /* ========== VIEWS ========== */

    function rewardPerToken(address account) public view returns (uint) {
        if (subGraphInfo.length == 0) {
            return rewardPerTokenStored;
        }
        return 
            rewardPerTokenStored +
            (((block.timestamp - lastUpdateTime) * (userRewardRate[account] * multiplier[account]) * 1e18));
    }
 
    function earned(address account) public view returns (uint) {
        return
            ((_balances[account] *
             (rewardPerToken(account) - userRewardPerTokenPaid[account])) / 1e18) +
            rewards[account];
    }

    function decimals() internal pure returns (uint8) {
        return 18;
    }

    function getTotalDelegates(address account) external view returns (uint256) {
        return multiplier[account]; 
    }

    /* ========== PUBLIC MUTATIVE FUNCTIONS ========== */

    function addSubGraph(
        string memory _id,
        string memory _name,
        string memory _url,
        string memory _description
        )
        external
        nonReentrant
        isCorrectDevMillBalance
        setDevRewardRate
        setDevMultiplier
        setBalances
        updateReward(msg.sender) 
    {   
        require(isUserDelegating[msg.sender] == false, "You cannot add SubGraph after delegating");
        SubGraphInfo memory graphInfo;
        graphInfo = SubGraphInfo({
                id: _id,
                name: _name,
                url: _url,
                description: _description,
                owner: address(msg.sender),
                balances: minDevMillAmount
            });
        subGraphInfo.push(graphInfo);
        distributeMillFee(minDevMillAmount);
        addToDevList();
        emit AddSubGraph(msg.sender, _id);
        
    }

    function stakeNFT(uint256 tokenId, uint256 _nftTier, bytes32[] calldata merkleProof)  
    nonReentrant
    isValidMerkleProof(merkleProof, tokenId, _nftTier)
    isNotStakingNFT
    setUserRewardRate(_nftTier)
    external 
    {
        require(isSubGraphDev[msg.sender] == false, "You cannot delegate after adding subgraph");
        require(nftCollection.ownerOf(tokenId) == address(msg.sender), "User must be owner of the NFT");
        nftTokenId[msg.sender] = tokenId;
        isNFTStaked[msg.sender] = true;
        nftCollection.safeTransferFrom(msg.sender, address(this), tokenId);
        addToDelgateList();
        emit StakeNFT(msg.sender, tokenId);
    }

    function unStakeNFT(uint256 tokenId) nonReentrant external {
        require(tokenId == nftTokenId[msg.sender], "You have no NFT to unstake");
        delete nftTokenId[msg.sender];
        isNFTStaked[msg.sender] = false;
        nftCollection.safeTransferFrom(address(this), msg.sender, tokenId);
        emit UnstakeNFT(msg.sender, tokenId);
    }

    function stake(string memory gid, uint _amount)
        external
        nonReentrant 
        isCorrectMillBalance(_amount)
        isStakingNFT
        setDelegateMultiplier(_amount) 
        updateReward(msg.sender) 
    {
        uint256 millTotal = _amount * minDelegateAmount;
        SubGraphInfo storage graphInfo = findSubGraph(gid, millTotal);
        listOfUserSubGraph[msg.sender].push(graphInfo);
        distributeMillFee(minDevMillAmount);
        emit StakedTokens(msg.sender, _amount);
    }

    function getReward() external nonReentrant updateReward(msg.sender) {
        require(isNFTStaked[msg.sender] == true, "A Miller NFT must be staked to claim rewards");
        uint reward = rewards[msg.sender];
        if (reward > 0){
              rewards[msg.sender] = 0;
            stakingToken.transfer(msg.sender, reward);
            emit RewardPaid(msg.sender, reward);
        }
    }

    // ============ SUPPORTING FUNCTIONS ============

     function findSubGraph(string memory gid, uint256 _minDelegateAmount) internal returns (SubGraphInfo storage){
        for (uint256 i=0; i < subGraphInfo.length; i++){
                if(keccak256(bytes(subGraphInfo[i].id)) == keccak256(bytes(gid))){
                    subGraphInfo[i].balances = _minDelegateAmount;
                    return subGraphInfo[i];
                }
        }
        revert('Not found');
    }

    function getRewardRate(uint256 nftTier) internal view returns(uint256){
        require(nftTier >= 1 && nftTier <= 4 , "NFT tier is out of range");
        if (nftTier == 4){
            return tierFourRewardRate;
        }else if (nftTier == 3){
            return tierThreeRewardRate;
        }else if (nftTier == 2){
            return tiertwoRewardRate;
        }else {
            return tierOneRewardRate;
        }
    }

    function distributeMillFee(uint256 amount) internal {
        uint256 burn = amount / burnFactor;
        uint256 reserve = amount - burn;
        stakingToken.burnFrom(msg.sender, burn);
        stakingToken.transferFrom(msg.sender, address(this), reserve);
    }

     // ============ OWNER-ONLY ADMIN FUNCTIONS ============

     function withdraw() public onlyOwner {
        uint256 balance = address(this).balance;
        payable(msg.sender).transfer(balance);
    }

    function withdrawTokens(IERC20 token) 
    public 
    onlyOwner 
    {
        uint256 balance = token.balanceOf(address(this));
        token.transfer(msg.sender, balance);
    }

    function setTierOneRewardRate(uint256 rewardRate) 
    external 
    onlyOwner 
    {
        tierOneRewardRate = rewardRate;
    }

    function setTierTwoRewardRate(uint256 rewardRate) 
        external 
        onlyOwner 
    {
        tiertwoRewardRate = rewardRate;
    }

    function setTierThreeRewardRate(uint256 rewardRate)
        external 
        onlyOwner 
    {
        tierThreeRewardRate = rewardRate;
    }

    function setTierFourRewardRate(uint256 rewardRate) 
        external 
        onlyOwner 
    {
        tierFourRewardRate = rewardRate;
    }

    function setDelegateFee(uint256 fee) external onlyOwner {
        minDelegateAmount = fee * 10 ** decimals();
    }

    function setDevMillFee(uint256 fee) external onlyOwner { 
        minDevMillAmount = fee * 10 ** decimals();
    }

    function setBurnFactor(uint256 fac) 
        external 
        onlyOwner 
    {
        burnFactor = fac;
    }

    function setMerkleRoot(bytes32 merkleRoot) 
    external 
    onlyOwner 
    {
        NFTMerkleRoot = merkleRoot;
    }

    // ============ Test ============
    function getTotalSubgraph() external view returns (uint256){
        return subGraphInfo.length; 
    }

    function getMultiplier(address account) external view returns(uint256){
       return multiplier[account];
    }

    function getEarnedReward(address account) external view returns(uint256){
        return earned(account) / 1e18;
    }

    function recoverSigner(bytes32 hash, bytes memory signature) public pure returns (address) {
    bytes32 messageDigest = keccak256(
        abi.encodePacked(
            "\x19Ethereum Signed Message:\n32", 
            hash
        )
    );
    return ECDSA.recover(messageDigest, signature);
}
}

