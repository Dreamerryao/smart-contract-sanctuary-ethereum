interface IPupFrens {
    function transferFrom(
        address from,
        address to,
        uint256 tokenId
    ) external;

    function ownerOf(uint256 tokenId) external view returns (address);
}

interface IMintedPuppyCoin {
    struct TokenInfo {
        uint256 id;
        uint256 valueInPUP;
        uint256 numInCirculation;
        uint256 maxSupply;
    }

    function tokenInfoById(uint256 id)
        external
        view
        returns (TokenInfo calldata);

    function nextAvailableTokenId() external returns (uint256);

    function safeTransferFrom(
        address from,
        address to,
        uint256 id,
        uint256 amount,
        bytes memory data
    ) external;

    function safeBatchTransferFrom(
        address from,
        address to,
        uint256[] memory ids,
        uint256[] memory amounts,
        bytes memory data
    ) external;
}

interface IPuppyCoin {
    function transfer(address recipient, uint256 amount) external;
}

contract PupStaking is ERC721Holder, ERC1155Holder, Ownable {
    IPupFrens pupFrens;
    IMintedPuppyCoin mintedPuppyCoin;
    IPuppyCoin puppyCoin;
    address mintedPupAddr;

    constructor() public {
        _setContracts();
    }

    function _setContracts() internal {
        address _mintedPupAddr;
        address _pupFrensAddr;
        address _puppyCoinAddr;
        assembly {
            switch chainid()
            case 1 {
                // mainnet
                _pupFrensAddr := 0x9e700A4b58Cb939af475F2925aa65B1E30BD31fB
                _mintedPupAddr := 0x49d0018a2f4e2265d62539019d34ae1ca7855ac5
                _puppyCoinAddr := 0x2696Fc1896F2D5F3DEAA2D91338B1D2E5f4E1D44
            }
            case 4 {
                // rinkeby
                _pupFrensAddr := 0x1641befe9b20b9463bfa65842d5824cb4e63af58
                _mintedPupAddr := 0x79147e78928243f0b0f1dD52DC5587faE28fC13C
                _puppyCoinAddr := 0x183B665119F1289dFD446a2ebA29f858eE0D3224
            }
        }
        pupFrens = IPupFrens(_pupFrensAddr);
        mintedPuppyCoin = IMintedPuppyCoin(_mintedPupAddr);
        puppyCoin = IPuppyCoin(_puppyCoinAddr);
        mintedPupAddr = _mintedPupAddr;
    }

    struct AccountInfo {
        uint256 pupFrensStaked;
        mapping(uint256 => uint256) mintedPupStakedById;
        uint256 pointsStaked;
        uint256 lastRefreshTimestamp;
        uint256 tokensEarnedBeforeLastRefresh;
        uint256 tokensWithdrawn;
    }

    mapping(address => AccountInfo) public accounts;

    mapping(uint256 => address) public pupFrenOwners;

    // The base tokens per day for a single default PupFren
    uint256 public baseTokensEarnedPerDay = 500;

    // To stake a Minted Puppy Coin the users sends them to this contract address.
    function onERC1155Received(
        address,
        address from,
        uint256 id,
        uint256 value,
        bytes memory
    ) public virtual override returns (bytes4) {
        require(
            msg.sender == mintedPupAddr,
            "Can only receive Minted Puppy Coin ERC1155 NFTs"
        );
        refreshTokensEarned(from);
        accounts[from].mintedPupStakedById[id] += value;
        accounts[from].pointsStaked += mintedPupPointsByTokenId(id);
        return this.onERC1155Received.selector;
    }

    function onERC1155BatchReceived(
        address,
        address from,
        uint256[] memory ids,
        uint256[] memory values,
        bytes memory
    ) public virtual override returns (bytes4) {
        require(
            msg.sender == mintedPupAddr,
            "Can only receive Minted Puppy Coin ERC1155 NFTs"
        );
        refreshTokensEarned(from);
        for (uint256 i = 0; i < ids.length; i++) {
            accounts[from].mintedPupStakedById[ids[i]] += values[i];
            accounts[from].pointsStaked += (values[i] *
                mintedPupPointsByTokenId(ids[i]));
        }
        return this.onERC1155BatchReceived.selector;
    }

    function refreshTokensEarned(address addr) public {
        uint256 totalTokensEarned = calculateTokensEarned(addr);
        accounts[addr].tokensEarnedBeforeLastRefresh = totalTokensEarned;
        accounts[addr].lastRefreshTimestamp = block.timestamp;
    }

    function refreshTokensEarnedForMany(address[] calldata addresses) public {
        for (uint256 i = 0; i < addresses.length; i++) {
            refreshTokensEarned(addresses[i]);
        }
    }

    function calculateTokensEarned(address addr) public view returns (uint256) {
        uint256 secondsStakedSinceLastRefresh = block.timestamp -
            accounts[addr].lastRefreshTimestamp;

        return
            accounts[addr].tokensEarnedBeforeLastRefresh +
            ((accounts[addr].pointsStaked *
                secondsStakedSinceLastRefresh *
                baseTokensEarnedPerDay) / 8640000); // Divided by 86400 seconds/day and divided by 100 (default points per pupfren)
    }

    /** User must setApprovalForAll on the contract before staking. */
    function stakePupFrens(uint256[] calldata tokenIds) public {
        refreshTokensEarned(msg.sender);
        for (uint256 i = 0; i < tokenIds.length; i++) {
            require(
                pupFrens.ownerOf(tokenIds[i]) == msg.sender,
                "Not your token"
            );

            pupFrens.transferFrom(msg.sender, address(this), tokenIds[i]);
            pupFrenOwners[tokenIds[i]] = msg.sender;
            accounts[msg.sender].pointsStaked += pupFrenPointsByTokenId(
                tokenIds[i]
            );
        }
        accounts[msg.sender].pupFrensStaked += tokenIds.length;
    }

    function unstake(
        uint256[] calldata pupFrenTokenIds,
        uint256[] calldata mintedTokenIds,
        uint256[] calldata mintedTokenAmounts
    ) public {
        refreshTokensEarned(msg.sender);
        for (uint256 i = 0; i < pupFrenTokenIds.length; i++) {
            require(
                pupFrenOwners[pupFrenTokenIds[i]] == msg.sender,
                "pupfren is not staked"
            );
            pupFrens.transferFrom(
                address(this),
                msg.sender,
                pupFrenTokenIds[i]
            );
            pupFrenOwners[pupFrenTokenIds[i]] = address(0);
            accounts[msg.sender].pointsStaked -= pupFrenPointsByTokenId(
                pupFrenTokenIds[i]
            );
        }
        accounts[msg.sender].pupFrensStaked -= pupFrenTokenIds.length;

        for (uint256 i = 0; i < mintedTokenIds.length; i++) {
            accounts[msg.sender].mintedPupStakedById[
                mintedTokenIds[i]
            ] -= mintedTokenAmounts[i];
            accounts[msg.sender].pointsStaked -=
                mintedTokenAmounts[i] *
                mintedPupPointsByTokenId(mintedTokenIds[i]);
        }
        if (mintedTokenIds.length > 0) {
            mintedPuppyCoin.safeBatchTransferFrom(
                address(this),
                msg.sender,
                mintedTokenIds,
                mintedTokenAmounts,
                ""
            );
        }
    }

    function withdraw() public {
        refreshTokensEarned(msg.sender);
        uint256 tokensToWithdraw = accounts[msg.sender]
            .tokensEarnedBeforeLastRefresh -
            accounts[msg.sender].tokensWithdrawn;
        accounts[msg.sender].tokensWithdrawn += tokensToWithdraw;
        puppyCoin.transfer(msg.sender, tokensToWithdraw * 1000);
    }

    // Do not use in actual transaction due to massive gas cost.
    function stakedPupFrensOfOwner(
        address addr,
        uint256 start,
        uint256 stop
    ) public view returns (uint256[] memory) {
        if (accounts[addr].pupFrensStaked == 0) {
            return new uint256[](0);
        }

        uint256 index = 0;
        uint256[] memory ownedTokens = new uint256[](
            accounts[addr].pupFrensStaked
        );

        for (uint256 tokenId = start; tokenId <= stop; tokenId++) {
            if (pupFrenOwners[tokenId] == addr) {
                ownedTokens[index] = tokenId;
                index++;
                if (index == accounts[addr].pupFrensStaked) {
                    break;
                }
            }
        }

        return ownedTokens;
    }

    function setEarnRate(uint256 newTokensEarnedPerDay) public onlyOwner {
        baseTokensEarnedPerDay = newTokensEarnedPerDay;
    }

    function mintedPupPointsByTokenId(uint256 id)
        public
        view
        returns (uint256)
    {
        // The 1 Mil Minted Coin has an earning rate of 500, and 10 Mil Minted Coin has an earning rate of 5,000
        return mintedPuppyCoin.tokenInfoById(id).valueInPUP / 2000;
    }

    function pupFrenPointsByTokenId(uint256 tokenId)
        public
        pure
        returns (uint256)
    {
        return 100 + uint256(uint8(rawPupFrenPointsByTokenId[tokenId]));
    }

    // Each PupFren has a base earning rate of 100. Extra boosts are encoded here.
    bytes constant rawPupFrenPointsByTokenId =
        hex"";
}

