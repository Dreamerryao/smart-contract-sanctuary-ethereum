pragma solidity ^0.8.4;

import { ECDSAUpgradeable } from "@openzeppelin/contracts-upgradeable/utils/cryptography/ECDSAUpgradeable.sol";
import { EIP712Upgradeable } from "@openzeppelin/contracts-upgradeable/utils/cryptography/draft-EIP712Upgradeable.sol";
import { IERC20 } from "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import { Initializable } from "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import { INounsAuctionHouse } from "./interfaces/INounsAuctionHouse.sol";
import { INounsPartyAuctionHouse } from "./interfaces/INounsPartyAuctionHouse.sol";
import { INounsPartyToken } from "./interfaces/INounsPartyToken.sol";
import { INounsPartyVault } from "./interfaces/INounsPartyVault.sol";
import { OwnableUpgradeable } from "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import { PausableUpgradeable } from "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import { ReentrancyGuardUpgradeable } from "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";
import { UUPSUpgradeable } from "@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol";

contract NounsPartyAuctionHouse is
	Initializable,
	PausableUpgradeable,
	ReentrancyGuardUpgradeable,
	OwnableUpgradeable,
	EIP712Upgradeable,
	UUPSUpgradeable,
	INounsPartyAuctionHouse
{
	INounsAuctionHouse public nounsAuctionHouse;

	INounsPartyToken public nouns;

	INounsPartyVault public nounsPartyVault;

	address public signer;

	uint256 public timeBuffer;

	uint256 public reservePrice;

	uint8 public minBidIncrementPercentage;

	uint256 public duration;

	INounsPartyAuctionHouse.Auction public auction;

	/// @custom:oz-upgrades-unsafe-allow constructor
	// solhint-disable func-visibility
	// solhint-disable no-empty-blocks
	constructor() initializer {}

	function initialize(
		INounsAuctionHouse _nounsAuctionHouse,
		INounsPartyToken _nouns,
		INounsPartyVault _nounsPartyVault,
		address _signer,
		uint256 _timeBuffer,
		uint256 _reservePrice,
		uint8 _minBidIncrementPercentage,
		uint256 _duration
	) external initializer {
		__Pausable_init();
		__ReentrancyGuard_init();
		__Ownable_init();
		__UUPSUpgradeable_init();
		__EIP712_init("nouns.party", "2");

		nounsAuctionHouse = _nounsAuctionHouse;
		nouns = _nouns;
		timeBuffer = _timeBuffer;
		reservePrice = _reservePrice;
		minBidIncrementPercentage = _minBidIncrementPercentage;
		duration = _duration;
		signer = _signer;
		nounsPartyVault = _nounsPartyVault;
	}

	function settleCurrentAndCreateNewAuction(SignedCreateAuction calldata _auction)
		external
		override
		nonReentrant
		whenNotPaused
	{
		_settleAuction();
		_createAuction(_auction);
	}

	function createAuction(SignedCreateAuction calldata _auction) external override nonReentrant whenNotPaused {
		_createAuction(_auction);
	}

	function settleAuction() external override nonReentrant whenPaused {
		_settleAuction();
	}

	function _createAuction(SignedCreateAuction calldata _auction) internal {
		require(auction.settled || (!auction.settled && auction.startTime == 0), "Previous auction not yet settled");

		require(signer == _verify(_auction), "Invalid auction hash"); // hint: maybe wrong signer?

		require(_auction.partyNounId > auction.partyNounId, "New Party Noun required");

		// solhint-disable not-rely-on-time
		uint256 startTime = block.timestamp;
		uint256 endTime = startTime + duration;
		auction = Auction({
			partyNounId: _auction.partyNounId,
			nounId: _auction.nounId,
			amount: 0,
			startTime: startTime,
			endTime: endTime,
			bidder: payable(0),
			settled: false,
			tokenURI: _auction.tokenURI
		});

		emit AuctionCreated(_auction.partyNounId, _auction.nounId, startTime, endTime);
	}

	function _settleAuction() internal {
		require(auction.startTime != 0, "Auction hasn't begun");
		require(!auction.settled, "Auction has already been settled");
		require(block.timestamp >= auction.endTime, "Auction hasn't completed");

		auction.settled = true;

		if (auction.bidder != address(0)) {
			nouns.mint(auction.bidder, auction.nounId, auction.partyNounId, auction.tokenURI);
		}

		if (auction.amount > 0) {
			require(_safeTransferETH(payable(address(nounsPartyVault)), auction.amount), "Transfer to Vault failed");
		}

		emit AuctionSettled(auction.partyNounId, auction.nounId, auction.bidder, auction.amount);
	}

	function createBid(uint256 partyNounId) external payable override nonReentrant {
		INounsPartyAuctionHouse.Auction memory _auction = auction;

		require(_auction.partyNounId == partyNounId, "Party Noun not up for auction");
		require(block.timestamp < _auction.endTime, "Auction expired");
		require(msg.value >= reservePrice, "Must send at least reservePrice");
		require(
			msg.value >= _auction.amount + ((_auction.amount * minBidIncrementPercentage) / 100),
			"Bid too low"
		);

		address payable lastBidder = _auction.bidder;

		// Refund the last bidder, if applicable
		if (lastBidder != address(0)) {
			require(_safeTransferETH(lastBidder, _auction.amount), "Transfer failed");
		}

		auction.amount = msg.value;
		auction.bidder = payable(msg.sender);

		// Extend the auction if the bid was received within `timeBuffer` of the auction end time
		bool extended = _auction.endTime - block.timestamp < timeBuffer;
		if (extended) {
			auction.endTime = _auction.endTime = block.timestamp + timeBuffer;
		}

		emit AuctionBid(_auction.partyNounId, msg.sender, msg.value, extended);

		if (extended) {
			emit AuctionExtended(_auction.partyNounId, _auction.endTime);
		}
	}

	function pause() external override onlyOwner {
		_pause();
	}

	function unpause() external override onlyOwner {
		_unpause();
	}

	function setTimeBuffer(uint256 _timeBuffer) external override onlyOwner {
		timeBuffer = _timeBuffer;
		emit AuctionTimeBufferUpdated(_timeBuffer);
	}

	function setReservePrice(uint256 _reservePrice) external override onlyOwner {
		reservePrice = _reservePrice;
		emit AuctionReservePriceUpdated(_reservePrice);
	}

	function setMinBidIncrementPercentage(uint8 _minBidIncrementPercentage) external override onlyOwner {
		minBidIncrementPercentage = _minBidIncrementPercentage;
		emit AuctionMinBidIncrementPercentageUpdated(_minBidIncrementPercentage);
	}

	function setSigner(address _signer) external override onlyOwner {
		signer = _signer;
		emit SignerUpdated(_signer);
	}

	function setNounsPartyVault(INounsPartyVault _nounsPartyVault) external override onlyOwner {
		nounsPartyVault = _nounsPartyVault;
		emit NounsPartyVaultUpdated(_nounsPartyVault);
	}

	function _verify(SignedCreateAuction calldata _auction) internal view returns (address) {
		bytes32 digest = _hashTypedData(_auction);
		return ECDSAUpgradeable.recover(digest, _auction.signature);
	}

	function _hashTypedData(SignedCreateAuction calldata _auction) internal view returns (bytes32) {
		// https://eips.ethereum.org/EIPS/eip-712#definition-of-typed-structured-data-%F0%9D%95%8A
		// https://docs.openzeppelin.com/contracts/4.x/api/utils#EIP712-_hashTypedDataV4-bytes32-
		return
			_hashTypedDataV4(
				keccak256(
					abi.encode(
						keccak256("SignedCreateAuction(uint256 partyNounId,uint256 nounId,string tokenURI)"),
						_auction.partyNounId,
						_auction.nounId,
						keccak256(bytes(_auction.tokenURI))
					)
				)
			);
	}

	function _safeTransferETH(address to, uint256 value) internal returns (bool) {
		// solhint-disable avoid-low-level-calls
		(bool success, ) = to.call{ value: value, gas: 30_000 }(new bytes(0));
		return success;
	}

	function _authorizeUpgrade(address newImplementation) internal override onlyOwner {} // solhint-disable-line no-empty-blocks
}

