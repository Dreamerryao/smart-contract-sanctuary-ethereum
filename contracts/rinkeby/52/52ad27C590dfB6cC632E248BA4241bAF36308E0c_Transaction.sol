    struct Option{
        address token;
        address creater;
        uint256 id;
        uint256 amount;
        uint256 single;
        uint256 createTime;
        State   state;
    }
    struct User{
        uint256[] purchaseOrders;
        uint256[] sellOrders;
    }

    struct Auction{
        address token;
        address creater;
        uint256 id;
        uint256 amount;
        uint256 single;
        uint256 createTime;
        uint256 highestPrice;
        address highester;
    }

    struct Offer{
