    }

}


contract Transaction is ERC1155Holder,ITransaction{
    event Created(address indexed from,address indexed owner,uint orderId);
    using SafeMath for uint256;

    using EnumerableSet for EnumerableSet.AddressSet;
    EnumerableSet.AddressSet private permitlist;
    
    //固定价格交易订单

    Option[] public options;

    mapping(address => User) userInfo;

    uint256[]   activeOrders;

    mapping( uint256 => uint256 ) public orderIdIndex;

    uint256[]   invalidOrders;

    //拍卖订单

    uint256 taxFee = 2;

    address manager;

    address fee;

    constructor(){
        manager = msg.sender;
    }

    receive() external payable {
       
    }

    modifier OnlyManager(){
        require(manager == msg.sender,"Transaction:No permit");
        _;
    }

    function addPermitlist(address token) public OnlyManager returns(bool){
        require(token != address(0), "SwapMining: token is the zero address");
        return EnumerableSet.add(permitlist, token);
    }

    function isPermitlist(address token) public view returns (bool) {
        return EnumerableSet.contains(permitlist, token);
    }

    function removePermitlist(address token) public OnlyManager returns(bool){
        require(token != address(0), "SwapMining: token is the zero address");
        return EnumerableSet.remove(permitlist, token);
    }

    function setFeeInfo(address feeTo,uint256 rateFee) public OnlyManager{
        fee = feeTo;
        taxFee = rateFee;
    }

    function createOption(address token,address customer,uint256 asset,uint256 amount,uint256 single) public returns(uint256){
        require(isPermitlist(token) != false,"Transaction:Not support");
        require(customer != address(0) && amount > 0 && single > 0,"Trading:Wrong data");
        if(isPermitlist(msg.sender) == false){
            if(IERC165(token).supportsInterface(0xd9b67a26) != false){
                IERC1155(token).safeTransferFrom(msg.sender, address(this), asset, amount, new bytes(0));
                uint256 orderId = buildOrder(token, customer, asset, amount, single);
                return orderId;
            }else{
                IERC721(token).transferFrom(msg.sender, address(this), asset);
                uint256 orderId = buildOrder(token, customer, asset, 1, single);
                return orderId;
            }
        }else{
            uint256 orderId = buildOrder(token, customer, asset, amount, single);
            return orderId;
        }
    }

    function buildOrder(address token,address customer,uint256 asset,uint256 amount,uint256 single) internal returns(uint256 orderId){
        orderId = options.length;
        Option memory option = Option(token,customer,asset,amount,single,block.timestamp,State.solding);
        options.push(option);
        activeOrders.push(orderId);  
        orderIdIndex[orderId] = activeOrders.length - 1;
        User storage user = userInfo[customer];
        user.sellOrders.push(orderId);
        emit Created(msg.sender, customer, orderId);
    }

    function getOrders() public view returns(uint256[] memory active,uint256[] memory invalid){
        active = activeOrders;
        invalid = invalidOrders;
    }

    function getUserOrders(address customer) public view returns(uint256[] memory buy,uint256[] memory sell){
        User storage user = userInfo[customer];
        buy = user.purchaseOrders;
        sell = user.sellOrders;
    }

    function getPayment(uint256 orderId) public view returns(uint256){
        Option storage option = options[orderId];
        // uint256 targetAsset = option.amount;
        // uint256 targetPrice = option.single;
        return option.single.mul(option.amount);
        // assembly{
        //     let result := mul(targetAsset,targetPrice)
        //     mstore(0x0,result)
        //     return(0x0,32)
        // }
    }

    function purchase(uint256 orderId,uint256 payment) public payable{
        Option storage option = options[orderId];
        require(payment >= getPayment(orderId),"Transaction:Insufficient payment quantity");
        require(option.state == State.solding,"Transaction:State wrong");
        require(msg.sender != option.creater,"Transaction:Data duplication");
        uint256 fees = payment.mul(taxFee).div(100);
        TransferHelper.safeTransferETH(option.creater,payment.sub(fees));
        TransferHelper.safeTransferETH(fee, fees);
        option.state = State.saled;
        if(activeOrders.length>0){
            activeOrders[orderIdIndex[orderId]] = activeOrders[activeOrders.length - 1];
        }  
        invalidOrders.push(orderId);
        activeOrders.pop();
        User storage user = userInfo[msg.sender];
        user.purchaseOrders.push(orderId);
        if(IERC165(option.token).supportsInterface(0xd9b67a26) != false){
            IERC1155(option.token).safeTransferFrom(address(this), msg.sender, option.id, option.amount, new bytes(0));
        }else{
            IERC721(option.token).transferFrom(address(this), msg.sender, option.id);
        }
    }

    function cancelOrder(uint256 orderId) public{
        Option storage option = options[orderId];
        require(option.state == State.solding,"Transaction:State wrong");
        require(msg.sender == option.creater,"Transaction:No permit");
        option.state = State.cancelled;
        if(activeOrders.length>1){
            activeOrders[orderIdIndex[orderId]] = activeOrders[activeOrders.length - 1];
        }
        invalidOrders.push(orderId);
        activeOrders.pop();
        if(IERC165(option.token).supportsInterface(0xd9b67a26) != false){
            IERC1155(option.token).safeTransferFrom(address(this), msg.sender, option.id, option.amount, new bytes(0));
        }else{
            IERC721(option.token).transferFrom(address(this), msg.sender, option.id);
        }
    }

    
}