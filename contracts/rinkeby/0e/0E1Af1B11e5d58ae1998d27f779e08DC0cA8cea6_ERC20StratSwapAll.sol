import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

import "../interface/IUniswapV2Router02.sol";
import "../utils/SafeToken.sol";

contract ERC20StratSwapAll is Ownable, ReentrancyGuard {
    using SafeToken for address;
    using SafeMath for uint256;

    /// @notice Events
    event SetWhitelistedCaller(
        address indexed caller,
        address indexed addr,
        bool ok
    );

    IUniswapV2Router02 public router;
    address public wNative;

    /// list of whitelisted callers
    mapping(address => bool) public whitelistedCallers;


    /// @param _router The Uniswap router smart contract.
    constructor(IUniswapV2Router02 _router) public {
        router = _router;
        wNative = _router.WETH();
    }

    /// @dev Execute strategy. Swap all tokenIn to TokenOut.
    /// @param tokenIn The token address to swap.
    function execute(
        address[] calldata tokenIn,
        address tokenOut,
        uint256 /* amountETH */
    ) external nonReentrant {
        uint256 len = tokenIn.length;
        for (uint256 idx = 0; idx < len; idx++) {
            require(tokenIn[idx] != wNative, "token in is ETH");
            // 1. Approve router to do their stuffs
            tokenIn[idx].safeApprove(address(router), type(uint256).max);
            uint256 balance = tokenIn[idx].myBalance();
            address[] memory path = new address[](3);
            path[0] = tokenIn[idx];
            path[1] = wNative;
            path[2] = tokenOut;
            // 2. Convert that all tokenIn into tokenOut.
            router.swapExactTokensForTokens(
                balance,
                0,
                path,
                address(this),
                block.timestamp
            );
            // 3. Transfer all tokenOut (as a result of a conversion) back to the caller.
            tokenOut.safeTransfer(msg.sender, tokenOut.myBalance());
            // 4. Reset approval for safety reason
            tokenIn[idx].safeApprove(address(router), 0);
        }
    }

    /// @dev Set whitelisted callers. Must only be called by the owner.
    function setWhitelistedCallers(address[] calldata callers, bool ok)
        external
        onlyOwner
    {
        for (uint256 idx = 0; idx < callers.length; idx++) {
            whitelistedCallers[callers[idx]] = ok;
            emit SetWhitelistedCaller(_msgSender(), callers[idx], ok);
        }
    }
}

