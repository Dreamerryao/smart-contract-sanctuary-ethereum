import "@openzeppelin/contracts/token/ERC1155/ERC1155.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "./imports/utils/WithNonce.sol";
import "./imports/utils/WithDelegate.sol";
import "./imports/Voting.sol";

abstract contract ERC1155Votes is ERC1155, WithNonce, WithDelegate {
    using Voting for Voting.FungibleVoting;

    // ERC1155 doesn't keep track of the summed balance for each account, so we use a voting system that includes that
    Voting.FungibleVoting private _votes;

    uint256 constant SILVER_TICKET = 0;
    uint256 constant GOLD_TICKET = 1;
    uint256 constant PLATINUM_TICKET = 2;

    mapping(address => uint256) voteOwners;

    event DelegateVotesChanged(address indexed delegate, uint256 previousBalance, uint256 newBalance);

    function getVotes(address account) public view returns (uint256) {
        return _votes.getVotes(account);
    }

    function getPastVotes(address account, uint256 blockNumber) public view returns (uint256) {
        return _votes.getVotesAt(account, blockNumber);
    }

    function getPastTotalSupply(uint256 blockNumber) public view returns (uint256) {
        return _votes.getTotalVotesAt(blockNumber);
    }

    function getIdVotingPower(uint256 id) public pure returns (uint256) {
        if (id == SILVER_TICKET) {
            return 25;
        } else if (id == GOLD_TICKET) {
            return 50;
        } else if (id == PLATINUM_TICKET) {
            return 100;
        }

        return 0;
    }

    function mint(address to, uint256 id) public {
        require(id <= PLATINUM_TICKET, "Invalid token ID");
        require(voteOwners[to] == 0, "Already have a ticket");

        _mint(to, id, 1, "");
    }

    function _mint(
        address to,
        uint256 id,
        uint256 amount,
        bytes memory data
    ) internal virtual override {
        super._mint(to, id, amount, data);
        _votes.mint(to, getIdVotingPower(id), _hookDelegateVotesChanged);
        voteOwners[to] = getIdVotingPower(id);
    }

    function _burn(
        address from,
        uint256 id,
        uint256 amount
    ) internal virtual override {
        super._burn(from, id, amount);
        _votes.burn(from, getIdVotingPower(id), _hookDelegateVotesChanged);
        voteOwners[from] -= getIdVotingPower(id);
    }

    function _safeTransferFrom(
        address from,
        address to,
        uint256 id,
        uint256 amount,
        bytes memory data
    ) internal virtual override {
        require(voteOwners[to] == 0, "Already an owner of token");
        super._safeTransferFrom(from, to, id, amount, data);
        uint256 votingPower = getIdVotingPower(id);
        _votes.transfer(from, to, votingPower, _hookDelegateVotesChanged);
        voteOwners[from] -= votingPower;
        voteOwners[to] = votingPower;
    }

    function _afterDelegateChange(address delegator, address oldDelegatee, address newDelegatee) internal virtual override {
        super._afterDelegateChange(delegator, oldDelegatee, newDelegatee);
        _votes.delegate(delegator, newDelegatee, _hookDelegateVotesChanged);
    }

    function _hookDelegateVotesChanged(address account, uint256 previousBalance, uint256 newBalance) private {
        emit DelegateVotesChanged(account, previousBalance, newBalance);
    }

    function _useNonce(address owner) internal virtual override(WithNonce, WithDelegate) returns (uint256 current) {
        return super._useNonce(owner);
    }

}

