    function updatePrice() public {
        uint256 now_time = block.timestamp;
        uint256 his_time = prices[prices.length-1][0];
        uint256 count = now_time.sub(his_time).div(24 hours);
        if(count > 0){
            uint256[2] memory price = [his_time.add(count.mul(24 hours)),getTokenPrice()];
            prices.push(price);
            buyflag  = true;
            sellflag = true;
        }
    }

    function getTokenPrice() public view  returns(uint256) {
        address[] memory _addressPair = new address[](2);
        _addressPair[0] = address(this);
        _addressPair[1] = usdt;
        uint256 usdtPrice =router.getAmountsOut(
            10**uint256(this.decimals()),
            _addressPair
        )[_addressPair.length - 1];
        return usdtPrice;
    }
    
    function checkRange() public {
        if(IBEP20(pair).totalSupply()==0){
            return;
        }
        uint256 currentPrice = getTokenPrice();
        uint256 historyprice = prices[prices.length-1][1];
        uint256 _rangeprice;
        buyflag  = true;
        sellflag = true;
        
        if(currentPrice > historyprice){
            _rangeprice = currentPrice.sub(historyprice);
            if(_rangeprice.mul(1e5).div(historyprice) >= up){
                buyflag = false;
            }
        }else{
            _rangeprice = historyprice.sub(currentPrice);
            if(_rangeprice.mul(1e5).div(historyprice) >= down){
                sellflag = false;
            }
        }
    }
