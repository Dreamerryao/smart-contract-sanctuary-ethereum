library Strings {

    function concat(string memory _base, string memory _value) pure internal returns (string memory) {
        bytes memory _baseBytes = bytes(_base);
        bytes memory _valueBytes = bytes(_value);

        string memory _tmpValue = new string(_baseBytes.length + _valueBytes.length);
        bytes memory _newValue = bytes(_tmpValue);

        uint i;
        uint j;

        for(i=0; i<_baseBytes.length; i++) {
            _newValue[j++] = _baseBytes[i];
        }

        for(i=0; i<_valueBytes.length; i++) {
            _newValue[j++] = _valueBytes[i];
        }

        return string(_newValue);
    }

}


contract Payments {

    using Strings for string;

    struct Payment {
        uint id;
        uint amount;
        address payable merchant;
        bool isOnetime;
        string title;
        bool isValid;
        address token;
        uint commisionRate;
        string payerInfo;
    }

    event PaymentCreated(
        Payment payment
    );

    event PaymentPaid(
        Payment payment
    );

    mapping (uint => Payment) public allPayments;

    uint _totalPayments = 0;
    uint _defaultCommisionRate = 10;

    function getTotalPayments() external view returns(uint256) {
        return _totalPayments;
    }

    function createPayment(
        uint _amount,
        address _token,
        bool _isOnetime,
        string calldata _title
    ) external {
        uint id = _totalPayments;
        Payment memory newPayment = Payment({
            id: id,
            amount: _amount,
            token: _token,
            merchant: payable(msg.sender),
            isOnetime : _isOnetime,
            title : _title,
            commisionRate: _defaultCommisionRate,
            payerInfo: "",
            isValid: true
        });

        allPayments[id] = newPayment;
        _totalPayments++;
        emit PaymentCreated(newPayment);
    }


    function getPayment(uint256 _index) view public returns (Payment memory) {
        require(_index < _totalPayments, "Invalid payment index!");
        return allPayments[_index];
    }


    function makePayment(uint256 _index, string calldata _payerInfo) payable external {
        require(_index < _totalPayments, "Invalid payment index!");

        Payment storage payment = allPayments[_index];
        require(payment.isValid, "Payment is not valid anymore!");

        if (payment.token == address(0)) {
            _payWithEther(payment, _payerInfo);
        }
        else {
            _payWithToken(payment, _payerInfo);
        }
    }

    function _payWithEther(Payment storage payment, string calldata _payerInfo) internal {
        require(payment.amount == msg.value, "Amount not accurate for payment!");

        bool sent = payment.merchant.send(msg.value);
        require(sent, "Failed to make payment!");

        if (payment.isOnetime) {
            payment.isValid = false;
        }
        payment.payerInfo = _payerInfo;
        emit PaymentPaid(payment);
    }

    function _payWithToken(Payment storage payment, string calldata _payerInfo) internal {

        address token = payment.token;

        // ERC20 tokenErc20 = ERC20(token);
        // uint256 all2 = tokenErc20.allowance(msg.sender, address(this));

        uint256 amount = payment.amount;
        uint256 currentAllowance = allowance(token);
        string memory allowanceMsg;
        if (currentAllowance < amount) {
            string memory _msg = "Insufficient allowed balance! Needed:";
            allowanceMsg = _msg.concat(uint2str(amount));
            allowanceMsg = allowanceMsg.concat(" allowance:");
            allowanceMsg = allowanceMsg.concat(uint2str(currentAllowance));

            allowanceMsg = allowanceMsg.concat(" owner:");
            allowanceMsg = allowanceMsg.concat(toString(abi.encodePacked(msg.sender)));

            allowanceMsg = allowanceMsg.concat(" spender:");
            allowanceMsg = allowanceMsg.concat(toString(abi.encodePacked(address(this))));
        }
        require(currentAllowance >= amount, allowanceMsg);

        uint256 payerBalance = balanceOf(token);
        require(amount <= payerBalance, "Insufficient token balance");

        bool sent = transferFrom(token, payment.merchant, amount);
        require(sent, "Failed to make payment!");

        if (payment.isOnetime) {
            payment.isValid = false;
        }
        payment.payerInfo = _payerInfo;
        emit PaymentPaid(payment);
    }


    function allowance(address token) internal returns (uint256) {
        bytes memory payload = abi.encodeWithSignature("allowance(address,address)", msg.sender, address(this));
        (bool success, bytes memory returnData) = token.call(payload);
        require(success, "Allowance can not be checked!");
        return abi.decode(returnData, (uint256));
    }

    function balanceOf(address token) internal returns (uint256) {
        bytes memory payload =  abi.encodeWithSignature("balanceOf(address)", msg.sender);
        (bool success, bytes memory returnData) = token.call(payload);
        require(success, "Balance can not be checked!");
        return abi.decode(returnData, (uint256));
    }

    function transferFrom(
        address token,
        address recipient,
        uint256 amount
    ) internal returns (bool) {
        bytes memory payload =  abi.encodeWithSignature("transferFrom(address,address,uint256)", msg.sender, recipient, amount);
        (bool success, bytes memory returnData) = token.call(payload);
        require(success, "Transfer can not be completed!");
        return abi.decode(returnData, (bool));
    }


    function toString(bytes memory data) public pure returns(string memory) {
        bytes memory alphabet = "0123456789abcdef";

        bytes memory str = new bytes(2 + data.length * 2);
        str[0] = "0";
        str[1] = "x";
        for (uint i = 0; i < data.length; i++) {
            str[2+i*2] = alphabet[uint(uint8(data[i] >> 4))];
            str[3+i*2] = alphabet[uint(uint8(data[i] & 0x0f))];
        }
        return string(str);
    }

    function uint2str(uint _i) internal pure returns (string memory _uintAsString) {
        if (_i == 0) {
            return "0";
        }
        uint j = _i;
        uint len;
        while (j != 0) {
            len++;
            j /= 10;
        }
        bytes memory bstr = new bytes(len);
        uint k = len;
        while (_i != 0) {
            k = k-1;
            uint8 temp = (48 + uint8(_i - _i / 10 * 10));
            bytes1 b1 = bytes1(temp);
            bstr[k] = b1;
            _i /= 10;
        }
        return string(bstr);
    }

}

