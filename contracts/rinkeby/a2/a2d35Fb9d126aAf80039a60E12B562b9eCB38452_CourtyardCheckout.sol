import "./ICheckout.sol";
import "./IOrderBook.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "@openzeppelin/contracts/utils/introspection/ERC165Checker.sol";

/**
 * @title {CourtyardCheckout} is an implementation of {ICheckout} that uses an external {IOrderBook} to place
 * orders.
 */
contract CourtyardCheckout is ICheckout, Pausable, Ownable, ReentrancyGuard {

    using SafeERC20 for IERC20;

    event PaymentProcessed(address indexed from, address indexed to, address indexed token, uint256 amount);
    event PaymentReceiverUpdated(address indexed oldAddress, address indexed newAddress);
    event OrderOracleUpdated(address indexed oldAddress, address indexed newAddress);
    event OrderBookUpdated(address indexed oldAddress, address indexed newAddress);

    address public orderBook;       // Reference to the order book where orders will be placed.
    address public paymentReceiver; // the account that will be transferred the payments.
    address public orderOracle;     // the account that delivers signed messages to enable orders.

    /**
     * @dev modifier to check that the order book implements {IOrderBook}.
     */
    modifier onlyValidOrderBook(address addr) {
        require(
            ERC165Checker.supportsInterface(addr, type(IOrderBook).interfaceId),
            "CourtyardCheckout: Target order book contract does not match the interface requirements."
        );
        _;
    }

    /**
     * @dev modifier to ensure the input address is the non null address.
     */
    modifier nonNullAddress(address addr) {
        require(addr != address(0), "CourtyardCheckout: Non null address required.");
        _;
    }

    /* ========================================== CONSTRUCTOR AND SETTERS ========================================== */

    /**
     * @dev Constructor.
     */
    constructor(
        address _orderBook,
        address _paymentReceiver,
        address _orderOracle
    ) 
    Ownable()
    onlyValidOrderBook(_orderBook) 
    nonNullAddress(_paymentReceiver)
    nonNullAddress(_orderOracle) {
        orderBook = _orderBook;
        paymentReceiver = _paymentReceiver;
        orderOracle = _orderOracle;
    }
    
    /**
     * @dev helper to update the order book address.
     * Requirement: the new order book address must be valid.
     */
    function updateOrderBook(address newOrderBook) public onlyOwner onlyValidOrderBook(newOrderBook) {
        address oldOrderBook = orderBook;
        orderBook = newOrderBook;
        emit OrderBookUpdated(oldOrderBook, orderBook);
    }

    /**
     * @dev Update the payment receiver address.
     * Requirement: the payment receiver address cannot be the null address.
     */
    function updatePaymentReceiver(address newReceiver) public onlyOwner nonNullAddress(newReceiver) {
        address oldReceiver = paymentReceiver;
        paymentReceiver = newReceiver;
        emit PaymentReceiverUpdated(oldReceiver, paymentReceiver);
    }

    /**
     * @dev Update the order oracle address.
     * Requirement: the order oracle address cannot be the null address.
     */
    function updateOrderOracle(address newOracle) public onlyOwner nonNullAddress(newOracle) {
        address oldOracle = orderOracle;
        orderOracle = newOracle;
        emit OrderOracleUpdated(oldOracle, orderOracle);
    }


    /* ============================================= PAUSABLE HELPERS ============================================= */

    /**
     * @dev Pause the contract
     * Requirement: only the owner of the contract can pause it. 
     */
    function pause() public onlyOwner {
        _pause();
    }

    /**
     * @dev Unpause the contract
     * Requirement: only the owner of the contract can unpause it. 
     */
    function unpause() public onlyOwner {
        _unpause();
    }


    /* ============================================= CHECKOUT HELPERS ============================================= */

    /**
     * @dev helper to compute a checkout hash for both {computeErc20CheckoutHash} and {computeNativeCheckoutHash}
     */
    function _computeCheckoutHash(
        string memory id,
        address paymentToken,   // address(0) for the native cryptocurrency (ex: ETH for Ethereum)
        uint256 paymentValue,
        uint256 expirationTimestamp
    ) private view returns (bytes32) {
        return keccak256(abi.encode(
            address(this),  // this is to ensure that the order is meant to be processed by this contract.
            id,
            paymentToken,
            paymentValue,
            expirationTimestamp
        ));  
    }

    /**
     * @dev modifier to ensure that an order is valid.
     * The parameters other than {signature} make up the order details. They are hashed using 
     * {_computeCheckoutHash} and then compared to the signature to verify that the order is legit.
     */
    modifier onlyValidOrderSignature(
        string memory id,
        address paymentToken,   // address(0) for the native cryptocurrency (ex: ETH for Ethereum)
        uint256 paymentValue,
        uint256 expirationTimestamp,
        bytes memory signature
    ) {
        bytes32 expectedSignedHash = ECDSA.toEthSignedMessageHash(
            _computeCheckoutHash(id, paymentToken, paymentValue, expirationTimestamp)
        );
        require(ECDSA.recover(expectedSignedHash, signature) == orderOracle, "CourtyardCheckout: Invalid order call or signature.");
        _;
    }

    /* ============================================== IMPLEMENTATION ============================================== */
    
    /*
     * @dev see {ICheckout.hasOrderBeenPlaced}
     */
    function hasOrderBeenPlaced(string memory id) external view override returns (bool) {
        return IOrderBook(orderBook).hasBeenPlaced(id);
    }


    /* ============================================== ERC20 CHECKOUT ============================================== */

    /**
     * @dev see {ICheckout.computeErc20CheckoutHash}.
     * 
     * This implementation can be used by the {orderOracle} to compute the correct hash to sign for a specific order,
     * and is used in {onlyValidOrder} to verify that an incoming order is valid.
     *
     * Notes:
     *  1. This hash needs to be signed by {orderOracle} to be valid.
     *  2. if `hash` is the result of this function, orderOracleWallet.signMessage(ethers.utils.arrayify(hash))
     *     must be called in order to properly encode the hash before signing it.
     */
    function computeErc20CheckoutHash(
        string memory id,
        address paymentToken,
        uint256 paymentValue,
        uint256 expirationTimestamp
    ) public view override returns(bytes32) {
        return _computeCheckoutHash(id, paymentToken, paymentValue, expirationTimestamp);
    }

    /**
     * @dev checkout and place an order that is to be paid with the specified ERC20 token.
     */
    function erc20Checkout(
        string memory id,
        address paymentToken,
        uint256 paymentValue,
        uint256 expirationTimestamp,
        bytes memory signature
    ) public override nonReentrant whenNotPaused onlyValidOrderSignature(id, paymentToken, paymentValue, expirationTimestamp, signature) {
        IOrderBook book = IOrderBook(orderBook);
        require(expirationTimestamp >= block.timestamp, "CourtyardCheckout: Checkout time window has expired.");
        require(!book.hasBeenPlaced(id), "CourtyardCheckout: Order for id was already placed.");
        require(paymentToken != address(0), "CourtyardCheckout: Wrong call - use nativeCheckout() to pay with the native cryptocurrency.");
        address sender = _msgSender();
        IERC20(paymentToken).safeTransferFrom(sender, paymentReceiver, paymentValue);
        emit PaymentProcessed(sender, paymentReceiver, paymentToken, paymentValue);
        book.placeOrder(id, sender);
    }


    /* ============================================== NATIVE CHECKOUT ============================================== */

    /**
     * @dev see {ICheckout.computeNativeCheckoutHash}.
     * 
     * This implementation can be used by the {orderOracle} to compute the correct hash to sign for a specific order,
     * and is used in {onlyValidOrder} to verify that an incoming order is valid.
     *
     * Notes:
     *  1. This hash needs to be signed by {orderOracle} to be valid.
     *  2. if `hash` is the result of this function, orderOracleWallet.signMessage(ethers.utils.arrayify(hash))
     *     must be called in order to properly encode the hash before signing it.
     *  3. calling this function externally is the same as calling computeErcCheckoutHash with address(0) as the 
     *     {paymentToken}. This is not a bug, just an incidental feature.
     */
    function computeNativeCheckoutHash(
        string memory id,
        uint256 paymentValue,
        uint256 expirationTimestamp
    ) public view override returns(bytes32) {
        return _computeCheckoutHash(id, address(0), paymentValue, expirationTimestamp);
    }

    /**
     * @dev checkout and place an order that is to be paid with the native cryptocurrency (ex: ETH for Ethereum).
     *
     * Note: We could have chosen to send a refund if the user sends too much funds, but because we expect the funds
     *       to match exactly what is requested via the signature and we do not expect users to call the contract
     *       directly on their own, not sending the exact required funds will always result in a failure.
     */
    function nativeCheckout(
        string memory id,
        uint256 paymentValue,
        uint256 expirationTimestamp,
        bytes memory signature
    ) public payable override nonReentrant whenNotPaused onlyValidOrderSignature(id, address(0), paymentValue, expirationTimestamp, signature) {
        IOrderBook book = IOrderBook(orderBook);
        require(expirationTimestamp >= block.timestamp, "CourtyardCheckout: Checkout time window has expired.");
        require(!book.hasBeenPlaced(id), "CourtyardCheckout: Order for id was already placed.");
        address sender = _msgSender();
        require(msg.value == paymentValue, "CourtyardCheckout: Unexpected payment value received.");
        payable(paymentReceiver).transfer(msg.value);
        emit PaymentProcessed(sender, paymentReceiver, address(0), paymentValue);
        IOrderBook(orderBook).placeOrder(id, sender);
    }

}

