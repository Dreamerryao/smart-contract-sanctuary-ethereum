contract Payroll is Context, AccessControlEnumerable
{
    event PayrollCompleteForAll();
    event PayrollComplete(address recipient, uint256 amount);

    bytes32 public constant MANAGER_ROLE = keccak256("MANAGER_ROLE");

    address private ERC20tokenAddress;

    address[] private allRecipients;
    mapping(address => VestingSchedule[]) private paySchedules;
    mapping(address => uint256) private scheduleCountPerRecipient;

    constructor()
    {
        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
        _setupRole(MANAGER_ROLE, _msgSender());
    }

    /**
     */
    function getERC20TokenAddress() external view returns (address)
    {
        return ERC20tokenAddress;
    }
    /**
     */
    function setERC20TokenAddress(address tokenAddress) external
    {
        require(hasRole(DEFAULT_ADMIN_ROLE, _msgSender()), "Payroll: Only admins can change the token.");
        ERC20tokenAddress = tokenAddress;
    }

    /**
     */
    function addSchedule(address recipient, uint256 totalTokens, uint64 totalDays) external
    {
        require(hasRole(MANAGER_ROLE, _msgSender()), "Payroll: Only managers can add schedules.");

        // Prepare values
        uint64 timestamp = uint64(block.timestamp);
        uint64 totalSeconds = totalDays * 24 * 60 * 60;

        // Create schedule
        VestingSchedule schedule = new VestingSchedule(recipient, timestamp, totalSeconds);

        // Save the schedule
        uint256 index = scheduleCountPerRecipient[recipient];
        if (index == 0)
        {
            allRecipients.push(recipient);
        }
        scheduleCountPerRecipient[recipient] = index + 1;
        paySchedules[recipient][index] = schedule;

        // Give tokens to the VestingSchedule
        ERC20PresetMinterPauser tokenContract = ERC20PresetMinterPauser(ERC20tokenAddress);
        tokenContract.mint(address(schedule), totalTokens);
    }

    /**
     */
    function cancelSchedule(address recipient, uint256 index) external
    {
        require(hasRole(MANAGER_ROLE, _msgSender()), "Payroll: Only managers can cancel schedules.");
        require(index < scheduleCountPerRecipient[recipient], "Schedule index out of range.");

        VestingSchedule schedule = paySchedules[recipient][index];

        // Release any tokens earned, but not yet claimed
        schedule.release(ERC20tokenAddress);

        // Burn tokens that are still in the VestingSchedule
        ERC20PresetMinterPauser tokenContract = ERC20PresetMinterPauser(ERC20tokenAddress);
        uint256 remainingTokens = tokenContract.balanceOf(address(schedule));
        tokenContract.burnFrom(address(schedule), remainingTokens);
    }

    /**
     */
    function runPayroll() external
    {
        for (uint i = 0; i < allRecipients.length; i++)
        {
            runPayroll(allRecipients[i]);
        }
        emit PayrollCompleteForAll();
    }

    /**
     */
    function runPayroll(address recipient) public
    {
        uint256 totalReleased = 0;
        uint scheduleCount = scheduleCountPerRecipient[recipient];
        for (uint i = 0; i < scheduleCount; i++)
        {
            VestingSchedule schedule = paySchedules[recipient][i];

            if ( !schedule.isComplete(ERC20tokenAddress) )
            {
                totalReleased += schedule.getReleasable(ERC20tokenAddress);
                schedule.release(ERC20tokenAddress);
            }
        }
        emit PayrollComplete(recipient, totalReleased);
    }

    /**
     */
    function GetRecipients() external view returns (address[] memory)
    {
        return allRecipients;
    }

    /**
     */
    function getScheduleCount(address recipient) external view returns (uint256)
    {
        return scheduleCountPerRecipient[recipient];
    }

    /**
     */
    function getSchedule(address recipient, uint256 index) external view returns (uint256[4] memory)
    {
        require(index < scheduleCountPerRecipient[recipient], "Schedule index out of range.");

        VestingSchedule schedule = paySchedules[recipient][index];
        uint256[4] memory data;

        // Start time
        data[0] = schedule.start();
        // End time
        data[1] = data[0] + schedule.duration();
        // Seconds remaining
        data[2] = data[1] - uint64(block.timestamp);
        // Tokens remaining
        data[3] = schedule.getRemaining(ERC20tokenAddress);

        return data;
    }

    /**
     */
    function getTotalRemaining(address recipient) external view returns(uint256)
    {
        uint256 result = 0;
        uint scheduleCount = scheduleCountPerRecipient[recipient];
        for (uint i = 0; i < scheduleCount; i++)
        {
            VestingSchedule schedule = paySchedules[recipient][i];
            result += schedule.getRemaining(ERC20tokenAddress);
        }
        return result;
    }
}