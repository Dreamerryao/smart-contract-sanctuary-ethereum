pragma solidity ^0.8.9;

import "./SomaERC777.sol";
import "../ISecurityIssuable.sol";

contract SomaERC777Issuable is SomaERC777, ISecurityIssuable {

    bool public constant override isIssuable = true;

    bytes32 public constant GLOBAL_ISSUER_ROLE = keccak256('SomaERC777Issuable:global-issuable-role');
    bytes32 public LOCAL_ISSUER_ROLE;

    constructor(address networkAddress) SomaERC777(networkAddress) {}

    modifier onlyIssuableRole {
        require(
            hasRole(LOCAL_ISSUER_ROLE, _msgSender()) || hasRole(GLOBAL_ISSUER_ROLE, _msgSender()),
            'IssuableSecurity: this can only be performed by an authorized authority.'
        );
        _;
    }

    function initialize(
        string memory name,
        string memory symbol,
        address[] memory _defaultOperators,
        uint256 _totalSupply,
        address _mintTo
    ) public virtual override {
        LOCAL_ISSUER_ROLE = keccak256(abi.encodePacked(address(this), 'SomaERC777Issuable:local-issuable-role'));
        super.initialize(name, symbol, _defaultOperators, _totalSupply, _mintTo);
    }

    /**
     * @dev See {IERC165-supportsInterface}.
     */
    function supportsInterface(bytes4 interfaceId) public view virtual override returns (bool) {
        return interfaceId == type(ISecurityIssuable).interfaceId || super.supportsInterface(interfaceId);
    }

    function issue(address tokenHolder, uint256 value) external override {
        issue(tokenHolder, value, "", "");
    }

    function issue(address tokenHolder, uint256 value, bytes memory userData, bytes memory operatorData)
    public
    override
    onlyIssuableRole
    onlyTransferApproved(address(0), tokenHolder, value, userData) {
        _mint(tokenHolder, value, userData, operatorData);
        emit Issued(_msgSender(), tokenHolder, value, userData, operatorData);
    }

    function redeem(address tokenHolder, uint256 value) external override {
        redeem(tokenHolder, value, "", "");
    }

    function redeem(address tokenHolder, uint256 value, bytes memory userData, bytes memory operatorData)
    public
    override
    onlyIssuableRole
    onlyTransferApproved(tokenHolder, address(0), value, userData) {
        _burn(tokenHolder, value, userData, operatorData);
        emit Redeemed(_msgSender(), tokenHolder, value, userData, operatorData);
    }
}

