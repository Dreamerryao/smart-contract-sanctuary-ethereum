import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "./FixedMath.sol";

interface SaviorTokenInterface is IERC20 {
    function mint(address _to, uint256 _amount) external;
}

contract SaviorMinter is Ownable, ReentrancyGuard {
    using FixedMath for int;
    address public USDT;
    address public ST;
    
    // formula details
    uint public currentLimit;
    int public midpoint;
    int public maxPrice;
    int public steepness;

    function purchaseTokens(uint _amount) public nonReentrant {
        IERC20(USDT).transferFrom(msg.sender, address(this), _amount);
        uint256 currentSupply = SaviorTokenInterface(ST).totalSupply();
        uint256 estimatedPrice = price(currentSupply + 1);
        require(currentSupply + _amount <= currentLimit, "max supply reached!");
        SaviorTokenInterface(ST).mint(msg.sender, estimatedPrice);
    }

    function price(uint x) public view returns(uint256){
        int numerator = int(x) - midpoint;
        int innerSqrt = (steepness + (numerator)**2);
        int fixedInner = innerSqrt.toFixed();
        int fixedDenominator = fixedInner.sqrt();
        int fixedNumerator = numerator.toFixed();
        int midVal = fixedNumerator.divide(fixedDenominator) + 1000000000000000000000000;
        int fixedFinal = maxPrice.toFixed() * midVal;
        return uint(fixedFinal / 1000000000000000000000000000000);
    }

    function withdraw() public onlyOwner {

    }

    // setters
    function setFormula(uint _limit, int _midpoint, int _maxPrice, int _steepness) public onlyOwner {
        currentLimit = _limit;
        midpoint = _midpoint;
        maxPrice = _maxPrice;
        steepness = _steepness;
    }

    function setAddresses(address _usdt, address _st) public onlyOwner {
        USDT = _usdt;
        ST = _st;
    }
}

