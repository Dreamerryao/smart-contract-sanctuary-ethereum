pragma solidity ^0.8.7;

import "../lib/sharkz/Adminable.sol";

contract MintSetup is Adminable {
    struct MintConfig {
        uint256 publicMintPrice;
        uint256 presaleMintPrice;
        uint256 auctionMintStartPrice;
        uint256 auctionMintFinalPrice;

        uint32 publicMintStartTime;
        uint32 presaleMintStartTime;
        uint32 presaleMintEndTime;
        uint32 auctionMintStartTime;
        uint32 auctionMintEndTime;

        uint32 auctionSupply;
        uint32 dutchAuctionTimeInterval;
        uint256 dutchAuctionPriceInterval;
    }
    MintConfig public mintConfig;

    constructor () {
        mintConfig.publicMintPrice = 0.5 ether;
        mintConfig.publicMintStartTime = 1600000000;
        
        mintConfig.presaleMintPrice = 0.2 ether;
        mintConfig.presaleMintStartTime = 1600000000;
        mintConfig.presaleMintEndTime = 1600000000;

        mintConfig.auctionSupply = 8700;
        mintConfig.auctionMintStartPrice = 0.5 ether;
        mintConfig.auctionMintFinalPrice = 0.2 ether;
        mintConfig.auctionMintStartTime = 1600000000;
        mintConfig.auctionMintEndTime = 1600000000;
        mintConfig.dutchAuctionTimeInterval = 1200;
        mintConfig.dutchAuctionPriceInterval = 0.01 ether;
    }

    //////// Public minting
    function setPublicMint(uint32 _startTime, uint256 _price) external onlyAdmin {
        mintConfig.publicMintStartTime = _startTime;
        mintConfig.publicMintPrice = _price;
    }

    function checkPublicMintTime() public view returns (bool) {
        uint256 _startTime = uint256(mintConfig.publicMintStartTime);
        return _startTime > 0 && block.timestamp >= _startTime;
    }

    modifier isPublicMintActive() {
        require(checkPublicMintTime(), "Public mint is not active");
        _;
    }
    

    //////// Presale minting
    function setPresale(uint32 _startTime, uint32 _endTime, uint _price) external onlyAdmin {
        mintConfig.presaleMintStartTime = _startTime;
        mintConfig.presaleMintEndTime = _endTime;
        mintConfig.presaleMintPrice = _price;
    }

    function checkPresaleTime() public view returns (bool) {
        uint256 _currentTime = block.timestamp;
        return 
            mintConfig.presaleMintStartTime > 0 
            && _currentTime >= mintConfig.presaleMintStartTime 
            && _currentTime <= mintConfig.presaleMintEndTime;
    }

    modifier isPresaleActive() {
        require(checkPresaleTime(), "Presale mint is not active");
        _;
    }
    

    //////// Auction minting
    function setAuction(uint32 _startTime, uint32 _endTime, uint32 _dTimeInterval, uint256 _daPriceInterval, uint256 _startPrice, uint256 _finalPrice) external onlyAdmin {
        mintConfig.auctionMintStartTime = _startTime;
        mintConfig.auctionMintEndTime = _endTime;
        mintConfig.dutchAuctionTimeInterval = _dTimeInterval;
        mintConfig.dutchAuctionPriceInterval = _daPriceInterval;
        mintConfig.auctionMintStartPrice = _startPrice;
        mintConfig.auctionMintFinalPrice = _finalPrice;
    }

    function changeAuctionSupply(uint32 _qty) external onlyAdmin {
        mintConfig.auctionSupply = _qty;
    }

    function checkAuctionTime() public view returns (bool) {
        uint256 _currentTime = block.timestamp;
        return 
            mintConfig.auctionMintStartTime > 0 
            && _currentTime >= mintConfig.auctionMintStartTime 
            && _currentTime < mintConfig.auctionMintEndTime;
    }

    modifier isAuctionActive() {
        require(checkAuctionTime(), "Auction mint is not active");
        _;
    }

    function getAuctionPrice() public view returns (uint256) {
        uint256 _currentTime = block.timestamp;
        MintConfig memory config = mintConfig;

        uint256 _startTime = config.auctionMintStartTime;
        uint256 _endTime = config.auctionMintEndTime;
        uint256 _startPrice = config.auctionMintStartPrice;
        uint256 _finalPrice = config.auctionMintFinalPrice;
        uint256 _daTimeInterval = config.dutchAuctionTimeInterval;
        uint256 _daPriceInterval = config.dutchAuctionPriceInterval;

        require(_startPrice > _finalPrice, "Auction start price is too low");

        // if auction not started, just return initial price
        if (_currentTime < _startTime || _currentTime > _endTime) {
            return _startPrice;
        }

        // calcuate the drop count integer, uint8 for 256 max count should be enough
        uint256 dropCount = (_currentTime - _startTime) / _daTimeInterval;

        // if dropped price will be less than ending price, just return ending price
        if ((dropCount * _daPriceInterval) > (_startPrice - _finalPrice)) {
            return _finalPrice;
        }
        return _startPrice - (dropCount * _daPriceInterval);
    }
}

