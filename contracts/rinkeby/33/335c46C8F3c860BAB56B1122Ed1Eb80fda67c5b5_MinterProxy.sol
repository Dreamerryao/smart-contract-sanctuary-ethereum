interface IXBMF is IERC20 { 
    function minterMint(address _to, uint256 _amount) external;
}

contract MinterProxy is Ownable {

    using SafeMath for uint256;

    uint256 constant private SODA_INITIAL_REWARD = 30000 ether;
    uint256 constant private SODA_REWARD_PER_DAY = 25 ether;
    
    uint256 constant private SECS_IN_DAY = 86400;
    uint256 constant private REWARD_DENOMINATOR = 1000000000000000000;
    
    //address constant private SODA_ADDRESS = 0x2624bB7854D823e80b2BAFf2066e2979Cd5e0186;
    //address constant private XBMF_ADDRESS = 0x0405B21BC88aF1Fa4f7Ac9cC311Da0748CA8f31E;

    address constant private SODA_ADDRESS = 0xC4F3E21B85D6f45eeeD7D5e4f02DCAAf1b02af72;
    address constant private XBMF_ADDRESS = 0xeF2Bd40e234f7D9a2ED6687D9de373a8AbFc5dD3;
    
    uint256 private contractBirthTime;
    
    address private minter;
    
    IERC721 soda = IERC721(SODA_ADDRESS);
    IXBMF xbmf = IXBMF(XBMF_ADDRESS);
    
    mapping(uint => bool) private sodaInitialClaims;
    mapping(uint256 => uint256) private sodaTimeRewards;
    mapping(uint256 => uint256) private sodaLastUpdate;
    
    constructor() public {
        contractBirthTime = now;
    }
    
    modifier onlyMinter {
        if (msg.sender != minter) revert();
        _;
    }
    
    // SODA
    
    function hasClaimedSodaInitialReward(uint256 nftId) public view returns (bool) {
        return sodaInitialClaims[nftId];
    }
    
    function claimSodaInitialReward(uint256 nftId) public {
        require(soda.ownerOf(nftId) ==  msg.sender, "You don't hold this NFT in your wallet");
        require(sodaInitialClaims[nftId] == false, "This soda initial claim has already been claimed");
        sodaInitialClaims[nftId] = true;
        xbmf.minterMint(msg.sender, SODA_INITIAL_REWARD);
    }
    
    function claimAllAccumulatedSodaRewards(uint256[] memory nftIds) public {
        for (uint i = 0; i < nftIds.length; i++){
            claimAccumulatedSodaRewards(nftIds[i]);
        }
    }
    
    function claimAccumulatedSodaRewards(uint256 nftId) public {
        require(soda.ownerOf(nftId) ==  msg.sender, "You don't own this NFT");

        uint256 dailyReward = SODA_REWARD_PER_DAY;
        uint256 time = block.timestamp;
        uint256 lastTime = sodaLastUpdate[nftId];
        if (lastTime == 0) {
            lastTime = contractBirthTime;
        }
        
        uint256 timePassed = time.sub(lastTime);
        uint256 additionalRewards = dailyReward.mul(timePassed).div(SECS_IN_DAY);
        sodaTimeRewards[nftId] = sodaTimeRewards[nftId].add(additionalRewards);

        sodaLastUpdate[nftId] = time;
        uint256 payout = sodaTimeRewards[nftId];
        
        sodaTimeRewards[nftId] = 0;
        xbmf.minterMint(msg.sender, payout);
    }
    
    function viewAccumulatedSodaDecimalRewards(uint256 nftId) public view returns (uint256[2] memory) {
        uint256 time = block.timestamp;
        uint256 lastTime = sodaLastUpdate[nftId];
        if (lastTime == 0) {
            lastTime = contractBirthTime;
        }
  
        uint256 dailyReward = SODA_REWARD_PER_DAY;
        uint256 timePassed = time.sub(lastTime);
        uint256 additionalRewards = dailyReward.mul(timePassed).div(SECS_IN_DAY);
        uint256[2] memory res =  [sodaTimeRewards[nftId].add(additionalRewards), REWARD_DENOMINATOR];
        return res;
    }
    
    // Minter 
    
    function getMinter() public view returns (address) {
        return minter;
    }
    
    function minterMint(address _to, uint256 _amount) external onlyMinter {
        xbmf.minterMint(_to, _amount);
    }
    
    function setMinter(address _minter) public onlyOwner {
        minter = _minter;
    }
    
}

