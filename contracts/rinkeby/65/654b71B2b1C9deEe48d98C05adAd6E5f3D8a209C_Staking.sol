contract Staking is Ownable {
    using SafeBEP20 for IBEP20;
    using SafeMath for uint256;

    struct UserInfo {
        uint256 amount;
        uint256 time;
        uint256 paidOut;
    }

    struct PoolInfo {
        IBEP20 token;
        uint256 decimals;
        uint256 APY;
        uint256 lockupPeriod;
        uint256 startDate;
        uint256 endDate;
        uint256 maxDepositPerUser;
        uint256 balance;
        uint256 capacity;
        bool paused;
        bool quarterlyPayout;
        uint256 uniqueStakeholders;
    }

    PoolInfo[] public poolInfo;
    mapping(uint256 => mapping(address => UserInfo[])) public userInfo;
    mapping(address => bool) private isAStakeholder;

    function deposit(uint256 _pid, uint256 _amount) public {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo[] storage stakes = userInfo[_pid][msg.sender];

        require(!pool.paused, "pool_paused");
        require(
            block.timestamp >= pool.startDate &&
            block.timestamp <= pool.endDate,
            "pool_inactive"
        );
        require(pool.balance + _amount <= pool.capacity, "amount_exceeds_pool_capacity");
        require(_amount <= pool.maxDepositPerUser, "amount_exceeds_maxDepositPerUser");

        pool.token.safeTransferFrom(
            address(msg.sender),
            address(this),
            _amount
        );

        stakes.push(UserInfo({
            amount: _amount,
            time: block.timestamp,
            paidOut: 0
        }));

        pool.balance = pool.balance.add(_amount);

        if(!isAStakeholder[msg.sender]) {
            pool.uniqueStakeholders = pool.uniqueStakeholders.add(1);
        }
        
        isAStakeholder[msg.sender] = true;

        emit Deposited(msg.sender, _pid, _amount);
    }

    function withdraw(uint256 _pid, uint256 _index) public {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo[] storage stakes = userInfo[_pid][msg.sender];

        require(stakes[_index].time + pool.lockupPeriod >= block.timestamp);

        pool.token.safeTransfer(
            msg.sender,
            stakes[_index].amount
        );
        
        emit Withdrawn(msg.sender, _pid, stakes[_index].amount);

        stakes[_index] = stakes[stakes.length - 1];
        stakes.pop();

        if(stakes.length == 0) {
            isAStakeholder[msg.sender] = false;
            pool.uniqueStakeholders = pool.uniqueStakeholders.sub(1);
        }
    }

    function harvestRewards(uint256 _pid, uint256 _index, uint256 _quartersPassed) internal {
        PoolInfo memory pool = poolInfo[_pid];
        UserInfo[] storage stakes = userInfo[_pid][msg.sender];

        uint256 reward = (
            stakes[_index].amount.mul(pool.APY).div(100 * 86400 * 365)  // rewards per second
        ).mul(
            _quartersPassed.mul(90 days)    // time difference
            // block.timestamp.sub(stakes[_index].time)
        );

        uint256 claimableRewards = reward.sub(stakes[_index].paidOut);
        require(claimableRewards > 0, "no_claimableRewards");

        pool.token.safeTransfer(msg.sender, claimableRewards);

        emit RewardHarvested(msg.sender, _pid, claimableRewards);

        stakes[_index].paidOut = stakes[_index].paidOut.add(claimableRewards);
    }

    function claimQuarterlyPayout(uint256 _pid, uint256 _index) external {
        PoolInfo memory pool = poolInfo[_pid];
        UserInfo[] storage stakes = userInfo[_pid][msg.sender];

        require(pool.quarterlyPayout, "quarterlyPayout disabled for pool");

        uint256 quartersPassed = (stakes[_index].time - block.timestamp).div(90 days);

        require(quartersPassed > 0, "too early to claim");
        
        harvestRewards(_pid, _index, quartersPassed);
    }

    function createPool(PoolInfo memory _poolInfo) external onlyOwner {
        require(_poolInfo.startDate < _poolInfo.endDate, "startDate should be less than endDate");
        _poolInfo.balance = 0;
        poolInfo.push(_poolInfo);
    }

    function recoverBEP20(address _token, uint256 _amount) external onlyOwner {
        IBEP20(_token).safeTransfer(owner(), _amount);
        emit Recovered(_token, _amount);
    }

    receive() external payable {
        emit ReceivedBNB(msg.sender, msg.value);
    }

    // Events
    event Deposited(address indexed user, uint256 indexed pid, uint256 amount);
    event Withdrawn(address indexed user, uint256 indexed pid, uint256 amount);
    event RewardHarvested(address indexed user, uint256 indexed pid, uint256 amount);
    event Recovered(address token, uint256 amount);
    event ReceivedBNB(address, uint256);
}