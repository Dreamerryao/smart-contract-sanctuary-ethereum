pragma solidity ^0.8.6;
import { ERC721 } from "@rari-capital/solmate/src/tokens/ERC721.sol";
import { Auth, Authority } from "@rari-capital/solmate/src/auth/Auth.sol";
import "@openzeppelin/contracts/utils/Strings.sol";

contract MetaTopeSkins is ERC721, Auth(msg.sender, Authority(address(0))) {
    bytes public uriPrestring;
    bytes public uriPoststring;
    bool public uriEditable = true;

    /**
     * @dev construct
     * @param _name name ot token
     * @param _symbol symbol ot token
     */
    constructor(string memory _name, string memory _symbol) ERC721(_name, _symbol) {}

    function setURI(string memory _pre, string memory _post) requiresAuth external {
        require(uriEditable, "URI no more editable");
        uriPrestring = bytes(_pre);
        uriPoststring = bytes(_post);
    }

    function disableSetURI() requiresAuth external {
        uriEditable = false;
    }

    function tokenURI(uint256 tokenId) public view virtual override returns (string memory) {
        return string(abi.encodePacked(
            uriPrestring,
            Strings.toString(tokenId),
            uriPoststring
        ));
    }

    function mint(address to, uint256 tokenId) public virtual requiresAuth {
        _mint(to, tokenId);
    }

    function burn(uint256 tokenId) public virtual requiresAuth {
        _burn(tokenId);
    }

    function safeMint(address to, uint256 tokenId) public virtual requiresAuth {
        _safeMint(to, tokenId);
    }

    function safeMint(
        address to,
        uint256 tokenId,
        bytes memory data
    ) public virtual requiresAuth {
        _safeMint(to, tokenId, data);
    }
}