    // CHANGE THIS & MINTING & REDEEMING SCIRPT so it's not hardcoded at1
    uint256 public price_target; 
    // The bound above and below the price target at which the refreshCollateralRatio() will not change the collateral ratio
    uint256 public price_band;
    uint256 public wm_step;

    // Mapping is also used for faster verification
    mapping(address => bool) public sir_pools; 
    bool public collateral_ratio_paused = false;
    bytes32 public constant COLLATERAL_RATIO_PAUSER = keccak256("COLLATERAL_RATIO_PAUSER");

    /* ========== MODIFIERS ========== */

    modifier onlyCollateralRatioPauser() {
        require(hasRole(COLLATERAL_RATIO_PAUSER, msg.sender));
        _;
    }

    modifier onlyPools() {
       require(wm_pools[msg.sender] == true, "Only frax pools can call this function");
        _;
    } 

    modifier onlyByOwnerGovernanceOrController() {
        require(msg.sender == timelock_address || msg.sender == controller_address || msg.sender == creator_address,  "Not the owner, controller, or the governance timelock");
        _;
    }

    /* ========== Constructor ========== */
    constructor(
        string memory _name,
        string memory _symbol,
        // use the message.sender address as the creater address
        address _creator_address,
        address _timelock_address

    ) public {
        name = _name;
        symbol = _symbol;
        creator_address = _creator_address;
        timelock_address = _timelock_address;
        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
        DEFAULT_ADMIN_ADDRESS = _msgSender();
        _mint(creator_address, initial_supply);
        grantRole(COLLATERAL_RATIO_PAUSER, creator_address);
        grantRole(COLLATERAL_RATIO_PAUSER, timelock_address);
        wm_step = 2500; // 6 decimals of precision, equal to 0.25%
        global_collateral_ratio = 1000000; // 1:1 (6 decimals for precision)
        price_band = 100000; // 1% above or below the price target
        price_target = 1000000; // Normalized to 1 dollar to start with 
        // collateral_price = 1000000; // 1 dollar for test 
        refresh_cooldown = 1600; // Refresh cooldown period is set to 1 hour (3600 seconds)
    }


    /* ========== VIEW FUNCTIONS ========== */
    function oracle_price(PriceChoice choice) internal view returns (uint256) {
        uint256 __eth_usd_price = uint(eth_usd_pricer.getLatestPrice()).mul(PRICE_PRECISION).div(uint256(10)**eth_usd_pricer_decimals);
        uint256 price_vs_eth = 0; 

        if (choice == PriceChoice.WM) {
            price_vs_eth = uint256(wmEthOracle.consult(weth_address, PRICE_PRECISION));
        }
        else if (choice == PriceChoice.WMS) {
            price_vs_eth = uint256(wmsEthOracle.consult(weth_address, PRICE_PRECISION));
        }

        else revert("INVALID PRICE CHOICE. Needs to be either 0 (WM) or 1 (WMS)");

        // Will be in 1e6 format 
        return __eth_usd_price.mul(PRICE_PRECISION).div(price_vs_eth);
    }

    function wm_price() public view returns (uint256) {
        return oracle_price(PriceChoice.WM);
    }

    function wms_price() public view returns (uint256) {
        return oracle_price(PriceChoice.WMS);
    }

    function wm_info() public view returns (uint256, uint256, uint256, uint256, uint256, uint256, uint256, uint256) {
        return (
            oracle_price(PriceChoice.WM), // frax_price()
            oracle_price(PriceChoice.WMS), // fxs_price()
            totalSupply(), // totalSupply()
            global_collateral_ratio, // global_collateral_ratio()
            globalCollateralValue(), // globalCollateralValue
            minting_fees, // minting_fee()
            redemption_fee, // redemption_fee()
            uint256(eth_usd_pricer.getLatestPrice()).mul(PRICE_PRECISION).div(uint256(10) ** eth_usd_pricer_decimals) //eth_usd_price
        );
    }

    // Iterate through all frax pools and calculate all value of collateral in all pools globally 
    function globalCollateralValue() public view returns (uint256) {
        uint256 total_collateral_value_d18 = 0; 

        for (uint i = 0; i < wm_pools_array.length; i++){ 
            // Exclude null addresses
            if (wm_pools_array[i] != address(0)){
                total_collateral_value_d18 = total_collateral_value_d18.add(SirachaMoneyPool(wm_pools_array[i]).collatDollarBalance());
            }

        }
        return total_collateral_value_d18;
    }


    /* ========== PUBLIC FUNCTIONS ========== */
    // There needs to be a time interval that this can be called. Otherwise it can be called multiple times per expansion.
    uint256 public last_call_time; // Last time the refreshCollateralRatio function was called 
    function refreshCollateralRatio() public {
        require(collateral_ratio_paused == false, "Collateral Ratio has been paused");
        uint256 wm_price_cur = wm_price();
        require(block.timestamp - last_call_time >= refresh_cooldown, "Must wait for the refresh cooldown since last refresh"); 

        // Step increments are 0.25% (upon genesis, changable by setWMstep())

        if (wm_price_cur > price_target.add(price_band)) {
            if(global_collateral_ratio <= wm_step){
                global_collateral_ratio = 0;
            } else {
                global_collateral_ratio = global_collateral_ratio.sub(wm_step);
            } 
        } else if (wm_price_cur < price_target.sub(price_band)) {
            if(global_collateral_ratio.add(wm_step) >= 1000000){
                global_collateral_ratio = 1000000;
            } else {
                global_collateral_ratio = global_collateral_ratio.add(wm_step);
            }
        }

        last_call_time = block.timestamp; 

        emit CollateralRatioRefreshed(global_collateral_ratio);
    }


