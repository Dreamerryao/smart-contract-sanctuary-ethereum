    uint256 public redemption_fee; // 6 decimals of precision, divide by 1000000 in calculations for fee
    uint256 public minting_fees;  // 6 decimals of precision, divide by 1000000 in calculations for fee
    uint256 public collateral_step_size; // amount to change the collaterlization ration by upon refreshCollateralRatio()
