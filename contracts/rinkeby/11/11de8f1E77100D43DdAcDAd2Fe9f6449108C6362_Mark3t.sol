pragma solidity ^0.8.4;

// import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

contract Mark3t is Ownable, Pausable, ReentrancyGuard {

    // using Counters for Counters.Counter;

    uint256 public LIST_PRICE = 1 ether;
    address private _izzy;
    address private _collectionContract;
    uint256 private _listedID;

    constructor() {
        //initialize izzy's address
        _izzy = _msgSender();
        //initialize collection contract address
        _collectionContract = address(0);
        //initialize listed tokenID
        _listedID = 1;
    }

    function setListPrice(uint256 price) public onlyOwner {
        LIST_PRICE = price;
    }

    function whoIsIzzy() public view returns(address){
        return _izzy;
    }
    function setIzzyAddress(address newIzzy) external {
        require(_msgSender() == _izzy); //require current izzy to change izzy's address
        require(newIzzy != address(0), "setIzzyAddress: new izzy cannot be zero");
        _izzy = newIzzy;
    }

    function listedCollection() public view returns (address){
        return _collectionContract;
    }

    function listedNFTid() public view returns (uint256){
        return _listedID;
    }

    function listCollection(address newCollection) public onlyOwner {
        require(newCollection != address(0), "Collection address cannot be zero");
        _collectionContract = newCollection;
    }

    function listTokenID(uint256 id) public onlyOwner {
        _listedID = id;
    }

    // ERC1155: Mapping from token contracts to token IDs to account balances
    mapping (address => mapping(uint256 => mapping(address => uint256))) private _erc1155balances;

    function withdrawERC1155(address tokenAddress, uint256 tokenId, uint256 value) external virtual {
        require(_erc1155balances[tokenAddress][tokenId][msg.sender] >= value, "Invalid token amount");
        _erc1155balances[tokenAddress][tokenId][msg.sender] -= value;
        IERC1155(tokenAddress).safeTransferFrom(address(this), msg.sender, tokenId, value, "");
    }

    function purchaseListedNFT(uint256 count) external payable nonReentrant whenNotPaused {
        // Make sure user have sent enough ETH
        require(msg.value >= LIST_PRICE*count, "Not enough Ether");
        // Purchase can't be 0
        require(count > 0, "You have to buy more than 0 tokens");
        // Checks if purchased amount exceeds erc1155balance
        require(_erc1155balances[_collectionContract][_listedID][_izzy] >= count, "Invalid token amount");
        _erc1155balances[_collectionContract][_listedID][_izzy] -= count;
        IERC1155(_collectionContract).safeTransferFrom(address(this), msg.sender, _listedID, count, "");
    }    

    function onERC1155Received(address, address from, uint256 id, uint256 value, bytes calldata) external virtual returns(bytes4) {
        _erc1155balances[msg.sender][id][from] += value;
        return this.onERC1155Received.selector;
    }

    /// @notice Send ETH inside the contract to izzy's address
    function withdraw() external {
        (bool success, ) = address(_izzy).call{ value: address(this).balance }("");
        require(success, "Withdraw failed"); // Withdraw failed
    }

    /// @notice Send ETH inside the contract to izzy's address
    function withdraw(uint256 amount) external {
        (bool success, ) = address(_izzy).call{ value: amount }("");
        require(success, "Withdraw failed"); // Withdraw failed
    }

    //openzeppelin default functions

    function pause() public onlyOwner {
        _pause();
    }

    function unpause() public onlyOwner {
        _unpause();
    }

}

