pragma solidity ^0.8.7;

import "@openzeppelin/contracts/utils/Context.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155Receiver.sol";
import "./interfaces/ITicketToken.sol";
import "./interfaces/IFactory.sol";

contract Converter is Context, Ownable, IERC1155Receiver {
  IFactory factory;

  event TicketConverted(address indexed sender, uint256 id, uint256 amount);
  event TicketWithdrawn(uint256 id, uint256 amount);

  constructor(address factory_) {
    factory = IFactory(factory_);
  }

  function convertNftToToken(uint256 id_, uint256 amount_) external {
    (bool supported, address tokenAddress,) = factory.tickets(id_);
    require(supported, "Converter: Ticket not supported");
    
    IERC1155(factory.ticketToken()).safeTransferFrom(_msgSender(), address(this), id_, amount_, "");
    ITicketToken(tokenAddress).mint(_msgSender(), amount_ * 1 ether);
    emit TicketConverted(_msgSender(), id_, amount_);
  }

  function convertTokenToNft(uint256 id_, uint256 amount_) external {
    (bool supported, address tokenAddress,) = factory.tickets(id_);
    require(supported, "Converter: Ticket not supported");
    
    ITicketToken(tokenAddress).burn(_msgSender(), amount_ * 1 ether);
    IERC1155(factory.ticketToken()).safeTransferFrom(address(this), _msgSender(), id_, amount_, "");    
    emit TicketConverted(_msgSender(), id_, amount_);
  }

  function withdrawTickets(uint256 id_, uint256 amount_) external onlyOwner {
    IERC1155(factory.ticketToken()).safeTransferFrom(address(this), _msgSender(), id_, amount_, "");
    emit TicketWithdrawn(id_, amount_);
  }

  function supportsInterface(bytes4 interfaceId) public virtual override view returns (bool) {
    return interfaceId == this.supportsInterface.selector;
  }

  function onERC1155Received(address, address, uint256, uint256, bytes calldata) 
    public virtual override returns (bytes4) {
      require(_msgSender() == address(factory.ticketToken()), "Converter: Only ticket tokens allowed");
      return this.onERC1155Received.selector;
  }

  function onERC1155BatchReceived(address, address, uint256[] calldata, uint256[] calldata, bytes calldata)
    public virtual override returns (bytes4) {
      require(_msgSender() == address(factory.ticketToken()), "Converter: Only ticket tokens allowed");
      return this.onERC1155BatchReceived.selector;
  }
}

