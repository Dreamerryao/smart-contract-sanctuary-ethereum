pragma solidity ^0.8.2;

import '@openzeppelin/contracts/access/Ownable.sol';
import '@openzeppelin/contracts/token/ERC20/IERC20.sol';
import '@openzeppelin/contracts/token/ERC20/extensions/draft-IERC20Permit.sol';
import '@openzeppelin/contracts/utils/Counters.sol';
import '@openzeppelin/contracts/utils/math/SafeMath.sol';

interface IgOHM is IERC20 {
  // pulls current index from sOHM
  function index() external view returns (uint256);

  // converts OHM amount to gOHM
  function balanceTo(uint256 _amount) external view returns (uint256);
}

contract TokenApparelShop__gOHM is Ownable {
  using SafeMath for uint256;
  using Counters for Counters.Counter;

  enum Size {
    XS,
    S,
    M,
    L,
    XL,
    XXL
  }

  mapping(Size => Counters.Counter) public soldAmount; // amount of each size sold already
  mapping(Size => uint256) public maxAmount; // max amount for each size

  // Sale parameters
  uint256 public price; // Padded price in OHM (ex. 1000000000 for 1 OHM)
  bool public isSaleActive;

  event Purchase(Size size, address recipient, uint256 gOHMprice);

  IgOHM public gOHM;

  constructor(uint256 _price, uint256[] memory inventory) {
    isSaleActive = false;
    price = _price;

    maxAmount[Size.XS] = inventory[0];
    maxAmount[Size.S] = inventory[1];
    maxAmount[Size.M] = inventory[2];
    maxAmount[Size.L] = inventory[3];
    maxAmount[Size.XL] = inventory[4];
    maxAmount[Size.XXL] = inventory[5];

    gOHM = IgOHM(0x0ab87046fBb341D058F17CBC4c1133F25a20a52f);
  }

  // Public functions
  function buy(Size size, address recipient) public {
    require(isSaleActive, 'Sale is not active');
    require(soldAmount[size].current() < maxAmount[size], 'Selected size is sold out');

    // Transfer funds
    uint256 gOHMprice = getgOHMPrice();
    gOHM.transferFrom(msg.sender, address(this), gOHMprice);

    soldAmount[size].increment();

    emit Purchase(size, recipient, gOHMprice);
  }

  function getgOHMPrice() public view returns (uint256) {
    return gOHM.balanceTo(price);
  }

  // Admin functions
  function flipSaleState() external onlyOwner {
    isSaleActive = !isSaleActive;
  }

  function setSalePrice(uint256 _price) external onlyOwner {
    price = _price;
  }

  function updateInventoryForSize(Size size, uint256 quantity) external onlyOwner {
    require(soldAmount[size].current() <= quantity, 'Quantity is less than already sold amount');
    maxAmount[size] = quantity;
  }

  function withdraw() external onlyOwner {
    gOHM.transfer(msg.sender, gOHM.balanceOf(address(this)));
  }
}

