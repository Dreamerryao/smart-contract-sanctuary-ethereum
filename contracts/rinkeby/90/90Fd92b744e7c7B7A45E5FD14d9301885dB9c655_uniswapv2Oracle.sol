pragma solidity ^0.8.0;
import "@uniswap/v2-core/contracts/interfaces/IUniswapV2Factory.sol";
import "@uniswap/v2-core/contracts/interfaces/IUniswapV2Pair.sol";
import "@uniswap/v2-periphery/contracts/interfaces/IUniswapV2Router01.sol";
contract uniswapv2Oracle{
    IUniswapV2Factory v2Factory;
    IUniswapV2Router01 v2Router;
    constructor(
        address _v2Factory,
        address _v2Router
    ){
        v2Factory=IUniswapV2Factory(_v2Factory);
        v2Router=IUniswapV2Router01(_v2Router);
    }
function getPairTokenAddress(address _tokenA,address _tokenB)private view returns(address){
address _pairTokenAddress=v2Factory.getPair(_tokenA,_tokenB);
require(_pairTokenAddress!=address(0),"uniswapv2Oracle:Pair does not exist for these tokens");
return _pairTokenAddress;
}
 
 function getTradePrice(address _tokenA,address _tokenB,address _tradeToken,uint _amountIn)
 external view returns(uint amountOut){
require(_tokenA !=address(0) && _tokenB!=address(0) && _tradeToken !=address(0),
"uniswapv2Oracle:Zero address is not allowed" );
require(_tradeToken==_tokenA || _tradeToken==_tokenB,"uniswapv2Oracle:trade token should be tokenA or tokenB");

 IUniswapV2Pair _pair=IUniswapV2Pair(getPairTokenAddress(_tokenA, _tokenB));
 (uint _reserve0,uint _reserve1,)=_pair.getReserves();
 require(_reserve0 !=0 && _reserve1 !=0,"uniswapv2Oracle:reserve amount is 0");
 address token0=_pair.token0();
 address token1=_pair.token1();
 uint reserveIn;
 uint reserveOut;
 if(_tradeToken==token0){
     reserveIn=_reserve0;
     reserveOut=_reserve1;
 }else if(_tradeToken==token1){
     reserveIn=_reserve1;
     reserveOut=_reserve0;
 }
 amountOut=v2Router.getAmountOut(_amountIn,reserveIn,reserveOut);
 return (amountOut);
}

 function getReserve(address _tokenA,address _tokenB)
 external view returns(uint,uint){
require(_tokenA !=address(0) && _tokenB!=address(0),
"uniswapv2Oracle:Zero address is not allowed" );
 IUniswapV2Pair _pair=IUniswapV2Pair(getPairTokenAddress(_tokenA, _tokenB));
 (uint _reserve0,uint _reserve1,)=_pair.getReserves();
 require(_reserve0 !=0 && _reserve1 !=0,"uniswapv2Oracle:reserve amount is 0");
 return (_reserve0,_reserve1);
}

}

