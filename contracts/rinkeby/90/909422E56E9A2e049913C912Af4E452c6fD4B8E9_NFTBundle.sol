import "@openzeppelin/contracts/utils/math/Math.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";

contract NFTBundle is ERC721Holder {
    using SafeMath for uint256;

    struct Bundle {
        uint256 units;
        uint256 unitsBought;
        uint256 minCost;
        Collection[] collections;
        uint256 bundleSize;
    }
    struct Collection {
        address artist;
        address contractAddress;
        uint256 firstId;
        uint256 lastId;
    }

    mapping(uint256 => Bundle) public bundle;
    mapping(bytes32 => uint256) public itemUnits;

    address payable public admin;
    uint256 public bundleIdTracker = 0;

    modifier onlyAdmin {
        require(admin == msg.sender, "Only admin allowed");
        _;
    }
    event BundleCreated(
        uint256 bundleId,
        uint256 minCost,
        uint256 units
    );
    event Received(
        address operator,
        address from,
        uint256 id,
        uint256 value,
        bytes data,
        uint256 gas
    );
    event BatchReceived(
        address operator,
        address from,
        uint256[] ids,
        uint256[] values,
        bytes data,
        uint256 gas
    );

    constructor() {
        admin = payable(msg.sender);
    }

    function createBundle(
        uint256 _units,
        uint256 _minCost,
        address[] memory _artists,
        address[] memory _collectionAdresses,
        uint[] memory firstIds
    ) public onlyAdmin {
        require(_collectionAdresses.length > 0, "Bundles must have at least 1 item");
        bundleIdTracker = bundleIdTracker.add(1);
        Bundle storage b = bundle[bundleIdTracker];
        b.units = _units;
        b.unitsBought = 0;
        b.minCost = _minCost;
        b.bundleSize = _collectionAdresses.length;

        for (uint8 i = 0; i < _collectionAdresses.length; i++) {
            Collection storage collection;
            collection.contractAddress = _collectionAdresses[i];
            collection.artist = _artists[i];
            uint256 balance = IERC721(collection.contractAddress).balanceOf(collection.artist);
            require(balance >= _units, "Not balance of token available");
            collection.firstId = firstIds[i];
            collection.lastId = collection.firstId.add(_units);
            fillCollection(collection.contractAddress, collection.firstId, _units, collection.artist);
            b.collections.push(collection);
        }
        emit BundleCreated(bundleIdTracker, _minCost, _units);
    }

    function fillCollection(address contractAddress, uint firstId, uint amount, address artist) private {
        require(IERC721(contractAddress).isApprovedForAll(msg.sender, address(this)), "Contract is not approved to move those NFTs");
        for (uint256 i = firstId; i < firstId.add(amount); i++) {
            IERC721(contractAddress).safeTransferFrom(artist, address(this), i);
        }
    }

    function buyBundle(uint256 _bundleId) public payable {
        require(bundleExists(_bundleId), "Bundle does not exist");
        Bundle storage b = bundle[_bundleId];
        require(msg.value >= b.minCost, "Value sent less than min cost");
        require(b.unitsBought < b.units, "Not any units left");
        b.unitsBought = b.unitsBought.add(1);
        sendUnits(_bundleId, b.unitsBought.sub(1), msg.sender);
    }

    function sendUnits(uint256 _bundleId, uint256 idOffset, address _receiver) private {
        Bundle storage b = bundle[_bundleId];
        for (uint8 i = 0; i < b.bundleSize; i++) {
            Collection storage c = b.collections[i];
            IERC721(c.contractAddress).safeTransferFrom(
                address(this),
                _receiver,
                c.firstId.add(idOffset)
            );
        }
    }

    // function viewBundleCollections(uint256 _bundleId) public view returns (address[] memory nftContracts) {
    //     require(bundleExists(_bundleId), "Bundle does not exist");
    //     address[] memory collections = bundle[_bundleId].collections;
    //     return collections;
    // }

    // function isBundleAvailable(uint256 _bundleId, uint256 _units) public view returns (bool) {
    //     require(bundleExists(_bundleId), "Bundle does not exist");
    //     Bundle storage b = bundle[_bundleId];
    //     for (uint8 i = 0; i < b.bundleSize; i++) {
    //         BundleItem storage item = b.bundledItems[i];
    //         uint256 bal =
    //             IERC1155(item.contractAddress).balanceOf(
    //                 address(this),
    //                 item.tokenId
    //             );
    //         if (bal < _units || b.unitsLeft < _units) {
    //             return false;
    //         }
    //     }
    //     return true;
    // }

    function bundleExists(uint256 _bundleId) public view returns (bool) {
        return bundle[_bundleId].bundleSize != 0;
    }

    function removeBundle(uint256 _bundleId) public onlyAdmin {
        Bundle storage b = bundle[_bundleId];
        b.units = 0;
        sendUnits(_bundleId, b.units, admin);
        delete bundle[_bundleId];
    }

    function payout() public onlyAdmin {
        admin.transfer(address(this).balance);
    }


    // function transferNonBundledItems(
    //     address _contractAddr,
    //     uint256[] memory _ids
    // ) public onlyAdmin {
    //     uint256[] memory amounts = new uint256[](_ids.length);
    //     for (uint256 i = 0; i < _ids.length; i++) {
    //         bytes32 itemId =
    //             keccak256(abi.encodePacked(_contractAddr, _ids[i]));
    //         require(itemUnits[itemId] == 0, "This token is used in a bundle");
    //         amounts[i] = IERC1155(_contractAddr).balanceOf(
    //             address(this),
    //             _ids[i]
    //         );
    //     }
    //     IERC1155(_contractAddr).safeBatchTransferFrom(
    //         address(this),
    //         admin,
    //         _ids,
    //         amounts,
    //         empty
    //     );
    // }
}

