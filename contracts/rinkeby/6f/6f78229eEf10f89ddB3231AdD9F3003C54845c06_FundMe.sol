contract FundMe {
    using SafeMathChainlink for uint256;

    mapping(address => uint256) public addressToAmountFunded; // contains a name for every address
    address[] public funders;

    address public owner;

    constructor() public {
        owner = msg.sender;
    }

    function fund() public payable {
        // $50
        // 50USD * 10Gwei(since we operate on Gwei in this contract) ** 18, we multiply it by 18 to have the result in Wei(18 decimals)
        uint256 minimumUSD = 50 * 10 ** 18;
        require(getConversionRate(msg.value) >= minimumUSD, "You need to spend more ETH");
        addressToAmountFunded[msg.sender] = msg.value; // set name for address
        funders.push(msg.sender);
    }

    function getVersion() public view returns (uint256){
        AggregatorV3Interface priceFeed = AggregatorV3Interface(0x8A753747A1Fa494EC906cE90E9f37563A8AF630e);
        return priceFeed.version();
    }
    function getPrice() public view returns(uint256){
        AggregatorV3Interface priceFeed = AggregatorV3Interface(0x8A753747A1Fa494EC906cE90E9f37563A8AF630e);
        (,int256 answer,,,) = priceFeed.latestRoundData();
        // ethPrice returns 4066,21000000 but we need to need convert it to Weis,
        // so we multiply it by 1,0000000000 to have 18numbers after comma = 4066,210000000000000000 Wei
        // so 4066,21000000 * 10000000000 = 4066,210000000000000000 Wei
         return uint256(answer * 10000000000);
    }
    function getConversionRate(uint256 ethAmount) public view returns (uint256){
        // ethAmount should be multiply by 18 decimals to have it in Wei

        // ethPrice returns 4066,210000000000000000 Wei
        uint256 ethPrice = getPrice();
        uint256 ethAmountInUsd = (ethPrice * ethAmount) / 1000000000000000000; // divide by 1000000000000000000 Wei (which is 1Eth)
        return ethAmountInUsd;
        // returns 4079400000000 but we need to add zeros at the begining to fill 18numbers after comma => 0,000004079400000000 Wei
        // In other words 1gwei(1,000,000,000 Wei) sends through blockain equals to 0,000004079400000000 USD
    }

    modifier onlyOwner {
        require(msg.sender == owner, "you are not the owner of this contract");
        _; // it means it will run all the reings after above require statement is true
    }

    function withdraw() payable onlyOwner public {
        // `this` keyword relates to the current contract we are working on (FundMe)
        // so in the line below we want to get the balance of the FundMe contract and transfer it to the sender

        // msg.sender it is a peseron who asks for withdraw
        msg.sender.transfer(address(this).balance);

        for (uint256 funderIndex=0; funderIndex < funders.length; funderIndex++){
            address funder = funders[funderIndex];
            addressToAmountFunded[funder] = 0;
        }

        funders = new address[](0); // reset array to blank
    }
}