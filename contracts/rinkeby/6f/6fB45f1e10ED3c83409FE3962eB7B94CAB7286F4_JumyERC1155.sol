        uint256 indexed tokenId,
        uint256 newUnitPrice,
        address indexed creator
    );

    function updateProtocolFeesPercentage(uint256 newPercentage)
        external
        onlyOwner
        returns (uint256)
    {
        require(newPercentage < 5_000, "max newPercentage");

        feesPercentage = newPercentage;
        emit ProtocolFeesPercentageUpdated(newPercentage);
        return newPercentage;
    }

    function updateProtocolFeesRecipient(address newRecipient)
        external
        onlyOwner
        returns (address)
    {
        require(newRecipient != address(0), "Nullish address");
        feesRecipient = newRecipient;
        emit ProtocolFeesRecipientUpdated(newRecipient);
        return newRecipient;
