    event ProtocolFeesRecipientUpdated(address indexed recipient);

    event ProtocolFeesPercentageUpdated(uint256 percentage);

    event Airdropped(
        address creator,
        uint256 indexed tokenId,
        uint256 quantity,
        address to
    );

