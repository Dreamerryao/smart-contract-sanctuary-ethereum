        // Persist token royalty details
        _royaltyInfo[tokenId].receiver = royaltyReceiver;
        _royaltyInfo[tokenId].percentage = royaltyPercentage;

        emit RoyaltySet(
            tokenId,
            royaltyPercentage,
            royaltyReceiver,
            msg.sender
        );

        _mint(address(this), tokenId, quantity, "");

        emit SaleCreated(tokenId, quantity, unitPrice, msg.sender);
    }

