        uint256 feesAmount = (msg.value * feesPercentage) / 10_000;
        uint256 creatorAmount = msg.value - feesAmount;

        payable(feesRecipient).transfer(feesAmount);

        payable(sales[tokenId].creator).transfer(creatorAmount);

        _safeTransferFrom(address(this), to, tokenId, quantity, "");

        emit Purchased(
            msg.sender,
            tokenId,
            quantity,
            creatorAmount,
            feesAmount
        );
    }

