        uint256 tokenId = currentTokenId;

        // Persist permanently the token URI
        _uris[tokenId] = tokenURI;

        // Persist the token creator
        sales[tokenId] = SaleDetails({
            creator: msg.sender,
            unitPrice: unitPrice
