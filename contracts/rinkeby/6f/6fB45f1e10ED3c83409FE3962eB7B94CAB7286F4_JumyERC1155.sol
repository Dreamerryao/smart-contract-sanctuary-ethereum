        require(
            msg.sender == sales[tokenId].creator,
            "Collection: Not the creator"
        );

        sales[tokenId].unitPrice = newUnitPrice;

        emit SaleUnitPriceUpdated(tokenId, newUnitPrice, msg.sender);
    }

