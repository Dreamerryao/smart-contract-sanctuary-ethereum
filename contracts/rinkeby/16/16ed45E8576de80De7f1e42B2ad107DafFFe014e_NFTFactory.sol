pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";

interface INFT is IERC1155 {
    function mint(address _beneficiary, uint256 _characterType, uint256 _layerId, uint256 _assetId, uint256 _supply) 
        external returns(uint256);
    function mintCharacter(address _beneficiary, uint256 _characterType, uint256[] memory _layerIds, uint256[] memory _assetIds) 
        payable external returns (uint256[] memory);
    function burn(address _owner, uint256 _id, uint256 _value) external;
    function updateMintCost(uint256 _newMintCost) external;
    function royaltyInfo(uint256 _tokenId, uint256 _salePrice) external view returns (address, uint256);
}

