pragma solidity ^0.8.0;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "./INFT.sol";


contract NFTFactory {
    using SafeMath for uint256;

    address nftContractAddress;
    /// @dev current max tokenId
    uint256 public randomIdPointer;

    constructor(address _nftContractAddress) {
        nftContractAddress = _nftContractAddress;
    }

    function random() internal returns (uint256) {
        randomIdPointer = randomIdPointer.add(1);
        uint256 randomId = randomIdPointer;
        uint256 rand = uint(keccak256(abi.encodePacked(block.difficulty, block.timestamp, randomId)));
        return (rand % 32);
    }

    function createNewCharacterByRandomCosmetic(address beneficiary) payable external returns(uint256[] memory) {
        require(beneficiary != address(0), "NFTFactory: beneficiary address is not valid");
        
        uint256 characterType = random();
        uint256[] memory layerIds = new uint256[](32);
        uint256[] memory assetIds = new uint256[](32);
        for(uint i = 0; i < 32; i++) {
            layerIds[i] = i;
            assetIds[i] = random();
        }

        uint256[] memory tokenIds = new uint256[](32);
        tokenIds = INFT(nftContractAddress).mintCharacter{ value: msg.value }(beneficiary, characterType, layerIds, assetIds);
        return tokenIds;
    }
}

