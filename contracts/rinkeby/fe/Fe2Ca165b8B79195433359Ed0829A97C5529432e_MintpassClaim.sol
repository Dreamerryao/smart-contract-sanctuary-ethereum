pragma solidity ^0.8.4;

import "./lib/ICollectionV2.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";


contract MintpassClaim is AccessControl, ReentrancyGuard {

    // Set merkle tree
    bytes32 public merkleRoot = "0x";  // Populate with merkle Root from JS script

    ICollectionV2 public mintpasses;
    uint public claimStartTime;
    uint public claimEndTime;
    uint public timestamp;  // seteable timestamp for debugging;
    bool public debug = false;
    mapping(address => bool) public claimedMintpasses;

    uint256 public nextMintpassId;
    uint256 public mintpassStartId;
    uint256 public mintpassEndId;

    event Claimed(uint256 indexed tokenId, address indexed newOwner);

    /// @notice Constructor
    /// @param _mintpassAddress Mintpass contract address
    /// @param _mintpassStartId Token ID to start with in the claim process
    /// @param _mintpassEndId Last token ID to claim
    /// @param _claimStartTime Start claiming time (epoch seconds)
    /// @param _claimEndTime End claiming time (epoch seconds)
    /// @param _debug Debug mode (seteable timestamp)
    constructor(
        address _mintpassAddress,
        uint256 _mintpassStartId,
        uint256 _mintpassEndId,
        uint _claimStartTime,
        uint _claimEndTime,
        bool _debug
    ) {
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        mintpasses = ICollectionV2(_mintpassAddress);
        mintpassStartId = _mintpassStartId;
        mintpassEndId = _mintpassEndId;
        nextMintpassId = _mintpassStartId;
        claimStartTime = _claimStartTime;
        claimEndTime = _claimEndTime;
        debug = _debug;
    }

    /// @notice Checks if address is a winner
    /// @param _merkleProof Computed Merkle proof
    /// @param _wallet Wallet address
    function walletIsWinner(
        bytes32[] calldata _merkleProof, address _wallet
    ) public view returns (bool) {
        bytes32 _leaf = keccak256(abi.encodePacked(_wallet));
        return MerkleProof.verify(_merkleProof, merkleRoot, _leaf);
    }

    /// @notice Claim a mintpass
    /// @param _merkleProof Merkle proof string from front end
    function claim(bytes32[] calldata _merkleProof) public nonReentrant {
        require(!claimedMintpasses[msg.sender], "Sender already claimed their CM21 Mintpass");
        require(walletIsWinner(_merkleProof, msg.sender), "Sender is not in whitelist");
        require(timeNow() >= claimStartTime, "Claim period has not started yet");
        require(timeNow() <= claimEndTime, "Claim period has ended");
        require(nextMintpassId <= mintpassEndId, "CM21 Mint Pass max supply reached");

        claimedMintpasses[msg.sender] = true;
        mintpasses.mint(msg.sender, nextMintpassId);
        nextMintpassId += 1;
    }

    /// @notice Set Merkle root
    /// @param _merkleRoot String with Merkle root from all whitelisted wallets
    function setMerkleRoot(bytes32 _merkleRoot) external onlyRole(DEFAULT_ADMIN_ROLE) {
        merkleRoot = _merkleRoot;
    }

    /// @notice Set a new Mintpass start token ID
    /// @param _startId New start token ID
    function setStartId(uint256 _startId) external onlyRole(DEFAULT_ADMIN_ROLE) {
        require(_startId > 0, "Start token ID must be greater than 0");
        mintpassStartId = _startId;
    }

    /// @notice Set a new Mintpass end token ID
    /// @param _endId New end token ID
    function setEndId(uint256 _endId) external onlyRole(DEFAULT_ADMIN_ROLE) {
        require(_endId > 0, "End token ID must be greater than 0");
        require(mintpassEndId > _endId, "End token ID must be greater than start token ID");
        mintpassEndId = _endId;
    }

    /// @notice Set a new Mintpass claim start time 
    /// @param _startTime New start time (epoch seconds)
    function setStartTime(uint _startTime) external onlyRole(DEFAULT_ADMIN_ROLE) {
        require(_startTime > 0, "Start time must be greater than 0");
        claimStartTime = _startTime;
    }

    /// @notice Set a new Mintpass claim end time 
    /// @param _endTime New end time (epoch seconds) 
    function setEndTime(uint _endTime) external onlyRole(DEFAULT_ADMIN_ROLE) {
        require(_endTime > 0, "End time must be greater than 0");
        require(_endTime > claimStartTime, "End time must be greater than start time");
        claimEndTime = _endTime;
    }

    /// @notice Timestamp function for debugging
    function timeNow() internal view returns (uint256) {
        if (debug) {
            return timestamp;
        } else {
            return block.timestamp;
        }
    }

    /// @notice Set timestamp for debugging
    /// @param _timestamp Epoch time in seconds
    function setNow(uint _timestamp) public onlyRole(DEFAULT_ADMIN_ROLE) {
        timestamp = _timestamp;
    }

    function supportsInterface(bytes4 interfaceId) public view virtual override(AccessControl) returns (bool) {
        return super.supportsInterface(interfaceId);
    }

}

