pragma solidity ^0.8.9;

import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/proxy/Clones.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "./lib/SafeERC20.sol";
import "./lib/LibListing.sol";

contract Market is OwnableUpgradeable {
    using Clones for address;
    using SafeERC20 for IERC20;
    using LibListing for LibListing.Listing;
    using LibToken for LibToken.Token;

    bytes32 private constant EIP712_DOMAIN_TYPEHASH =
        keccak256(
            "EIP712Domain(string name,string version,uint256 chainId,address verifyingContract)"
        );

    bytes32 private constant VERSION_HASH = keccak256("1");

    bytes32 private constant NAME_HASH = keccak256("Market");

    mapping(bytes32 => LibListing.ListingDetails) public listingDetails;

    IERC20 public currency;

    address public implementationERC721;

    address public implementationERC1155;

    address public defaultERC721;

    address public defaultERC1155;

    enum ContractType {
        None,
        ERC721,
        ERC1155
    }

    mapping(address => ContractType) public contractTypes;

    event ListingCreated(LibListing.Listing listing);

    event ListingCancelled(LibListing.Listing listing);

    event ListingBid(
        LibListing.Listing listing,
        address bidder,
        uint256 amount
    );

    event ListingTokenClaimed(LibListing.Listing listing, address claimer);

    event ListingPaymentClaimed(LibListing.Listing listing);

    // CONSTRUCTOR

    function initialize(
        IERC20 currency_,
        address implementationERC721_,
        address implementationERC1155_
    ) external initializer {
        __Ownable_init();

        currency = currency_;
        currency.safeApprove(address(this), type(uint256).max);

        implementationERC721 = implementationERC721_;
        defaultERC721 = implementationERC721.clone();
        ICollectionERC721(defaultERC721).initialize(
            "Galaxe NFT",
            "GLXNFT",
            false,
            0
        );
        ICollectionERC721(defaultERC721).transferOwnership(owner());
        contractTypes[defaultERC721] = ContractType.ERC721;

        implementationERC1155 = implementationERC1155_;
        defaultERC1155 = implementationERC1155.clone();
        ICollectionERC1155(defaultERC1155).initialize(false);
        ICollectionERC721(defaultERC1155).transferOwnership(owner());
        contractTypes[defaultERC1155] = ContractType.ERC1155;
    }

    // PUBLIC FUNCTIONS

    function createListing(LibListing.Listing memory listing) external {
        require(msg.sender == listing.seller, "Market: caller is not seller");
        require(listing.end > listing.start, "Market: end later than start");
        require(listing.end >= block.timestamp, "Market: end is in past");

        listing.token.deposit();
        LibListing.ListingDetails storage details = listingDetails[
            listing.hashListing()
        ];
        details.state = LibListing.ListingState.Created;
        details.lastBid = listing.minBid;

        emit ListingCreated(listing);
    }

    function bid(LibListing.Listing memory listing, uint256 amount) external {
        bytes32 listingHash = listing.hashListing();
        LibListing.ListingDetails storage details = listingDetails[listingHash];
        if (listing.isLazy()) {
            require(
                contractTypes[listing.token.tokenContract] != ContractType.None,
                "Market: invalid lazy mint contract"
            );
            require(
                details.state == LibListing.ListingState.None,
                "Market: listing is in wrong state"
            );
            bytes32 digest = keccak256(
                abi.encodePacked(uint16(0x1901), domainHash(), listingHash)
            );
            LibSig.checkSig(listing.signature, digest, listing.seller);
        } else {
            require(
                details.state == LibListing.ListingState.Created,
                "Market: listing is in wrong state"
            );
        }
        require(
            block.timestamp >= listing.start,
            "Market: listing not started"
        );
        require(block.timestamp < listing.end, "Market: listing finished");

        if (listing.listingType == LibListing.ListingType.FixedPrice) {
            _transferPayment(
                msg.sender,
                listing.seller,
                listing.minBid,
                listing.token
            );
            listing.token.transfer(msg.sender);
            details.state = LibListing.ListingState.Executed;

            emit ListingTokenClaimed(listing, msg.sender);
            emit ListingPaymentClaimed(listing);
        } else {
            if (details.lastBidder == address(0)) {
                require(
                    amount >= listing.minBid,
                    "Market: bid less than min bid"
                );
            } else {
                require(
                    amount >= details.lastBid + listing.bidStep,
                    "Market: bid less than last bid plus step"
                );
                currency.transfer(details.lastBidder, details.lastBid);
            }
            currency.transferFrom(msg.sender, address(this), amount);
            details.lastBidder = msg.sender;
            details.lastBid = amount;

            emit ListingBid(listing, msg.sender, amount);
        }
    }

    function claimToken(LibListing.Listing memory listing) external {
        LibListing.ListingDetails storage details = listingDetails[
            listing.hashListing()
        ];
        require(
            listing.isActive(details.state),
            "Market: cancelled or executed"
        );
        require(block.timestamp >= listing.end, "Market: listing not finished");

        address receiver = details.lastBidder;
        if (receiver == address(0)) {
            receiver = listing.seller;
        }
        require(msg.sender == receiver, "Market: caller can not claim");
        require(!details.tokenClaimed, "Market: already claimed");

        listing.token.transfer(receiver);
        details.tokenClaimed = true;

        emit ListingTokenClaimed(listing, msg.sender);
    }

    function claimPayment(LibListing.Listing memory listing) external {
        LibListing.ListingDetails storage details = listingDetails[
            listing.hashListing()
        ];
        require(
            listing.isActive(details.state),
            "Market: cancelled or executed"
        );
        require(block.timestamp >= listing.end, "Market: listing not finished");
        require(msg.sender == listing.seller, "Market: caller is not seller");
        require(details.lastBid != 0, "Market: no bids");
        require(!details.paymentClaimed, "Market: already claimed");

        _transferPayment(
            address(this),
            listing.seller,
            details.lastBid,
            listing.token
        );
        details.paymentClaimed = true;

        emit ListingPaymentClaimed(listing);
    }

    function cancel(LibListing.Listing memory listing) external {
        LibListing.ListingDetails storage details = listingDetails[
            listing.hashListing()
        ];
        require(listing.isActive(details.state), "Market: already cancelled");
        require(block.timestamp < listing.end, "Market: listing finished");
        require(msg.sender == listing.seller, "Market: caller is not seller");

        if (!listing.isLazy()) {
            listing.token.transfer(listing.seller);
        }
        if (details.lastBidder != address(0)) {
            currency.transfer(details.lastBidder, details.lastBid);
        }
        details.state = LibListing.ListingState.Cancelled;

        emit ListingCancelled(listing);
    }

    function createPrivateERC721(
        string calldata name,
        string calldata symbol,
        uint256 royalty
    ) external returns (address collection) {
        collection = implementationERC721.clone();
        ICollectionERC721(collection).initialize(name, symbol, true, royalty);
        ICollectionERC721(collection).transferOwnership(msg.sender);
        contractTypes[collection] = ContractType.ERC721;
    }

    function createPrivateERC1155() external returns (address collection) {
        collection = implementationERC1155.clone();
        ICollectionERC1155(collection).initialize(true);
        ICollectionERC1155(collection).transferOwnership(msg.sender);
        contractTypes[collection] = ContractType.ERC1155;
    }

    // VIEW FUNCTIONS

    function hashListing(LibListing.Listing memory listing)
        external
        pure
        returns (bytes32)
    {
        return listing.hashListing();
    }

    function domainHash() public view returns (bytes32) {
        uint256 chainId;

        assembly {
            chainId := chainid()
        }

        return
            keccak256(
                abi.encode(
                    EIP712_DOMAIN_TYPEHASH,
                    NAME_HASH,
                    VERSION_HASH,
                    chainId,
                    address(this)
                )
            );
    }

    function onERC1155Received(
        address,
        address,
        uint256,
        uint256,
        bytes calldata
    ) external pure returns (bytes4) {
        return
            bytes4(
                keccak256(
                    "onERC1155Received(address,address,uint256,uint256,bytes)"
                )
            );
    }

    // INTERNAL FUNCTIONS

    function _transferPayment(
        address from,
        address to,
        uint256 amount,
        LibToken.Token memory token
    ) private {
        uint256 royaltyAmount;
        if (contractTypes[token.tokenContract] != ContractType.None) {
            (uint256 royalty, address creator) = token.getRoyalty();
            royaltyAmount = (amount * royalty) / 10000;
            if (royaltyAmount > 0) {
                currency.transferFrom(from, creator, royaltyAmount);
            }
        }

        currency.transferFrom(from, to, amount - royaltyAmount);
    }
}

