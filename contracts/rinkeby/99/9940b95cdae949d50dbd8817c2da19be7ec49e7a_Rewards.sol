contract Rewards {

    using SafeMath for uint256;
    address team;
    mapping(address => depositStruct[]) userDeposits;
    rewardsStruct[] rewards;
    uint256 balanceOfDeposits;
    uint256 currentEpoch;

    struct depositStruct {
        uint256 amount;
        uint256 date;
        uint256 epoch;
        bool sent;
    }
    
    struct rewardsStruct {
        uint256 balanceOfDeposits;
        uint256 amount;
        uint256 date;
        uint256 epoch;
    }

    constructor(address _team) {
        team = _team;
    }

    function deposit() external payable {
        require(msg.value > 0, "should deposit at least some eth"); //value shold be > 0
        userDeposits[msg.sender].push(depositStruct(msg.value,block.timestamp,currentEpoch,false));
        balanceOfDeposits+=msg.value;
    }

    function calculateRewards(depositStruct memory _deposit,rewardsStruct memory _reward) internal pure returns(uint256){
        //reward taking into account percentage of pool
        uint256 _amount = _reward.amount.mul(_deposit.amount).div(_reward.balanceOfDeposits);
        return _amount;
    }

    //wirthdraws all possible funds
    function wirthdraw() external{
        depositStruct[] memory deposits = userDeposits[msg.sender];
        uint256 amount=0;
        for(uint256 i=0;i<deposits.length;i++){
            if(deposits[i].sent) continue;
            amount+=deposits[i].amount;
            for(uint256 j=0;j<rewards.length;j++){
                if(deposits[i].date < rewards[j].date && deposits[i].epoch == rewards[j].epoch && deposits[i].sent==false){
                    amount+=calculateRewards(deposits[i],rewards[j]);
                }
            }
            userDeposits[msg.sender][i].sent = true;
        }
        
        address payable receiver = payable(msg.sender);
        receiver.transfer(amount);
    }

    function depositReward() external payable onlyTeam {
        require(msg.value > 0, "should deposit at least some eth"); //eth value should be > 0
        if(rewards.length>0) //604800 1 week in seconds
            require(block.timestamp > (rewards[rewards.length-1].date+604799),"not 7 days after last reward deposit");
        rewards.push(rewardsStruct(balanceOfDeposits,msg.value,block.timestamp,currentEpoch));
        balanceOfDeposits=0;
        currentEpoch+=1;
    }

    modifier onlyTeam() {
        require(msg.sender == team, "only team can deposit rewards");
        _;
    }
}