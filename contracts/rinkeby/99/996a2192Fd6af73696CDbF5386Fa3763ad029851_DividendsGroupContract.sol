        address[] memory dividendsContractsArray
    ) 
        onlyOwner 
        public 
    {
        for(uint256 i = 0; i< dividendsContractsArray.length; i++) {
            dividendsContracts.remove(dividendsContractsArray[i]);
            
        }
    }
    
