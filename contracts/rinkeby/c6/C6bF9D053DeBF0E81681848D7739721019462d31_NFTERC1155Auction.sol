    function settleAuction(address _nftContractAddress, uint256 _tokenId)
        external
    {
        _isAuctionOver(NFT(_nftContractAddress, _tokenId, msg.sender));
        _transferNftAndPaySeller(NFT(_nftContractAddress, _tokenId , msg.sender));
        emit AuctionSettled(_nftContractAddress, _tokenId, msg.sender);
