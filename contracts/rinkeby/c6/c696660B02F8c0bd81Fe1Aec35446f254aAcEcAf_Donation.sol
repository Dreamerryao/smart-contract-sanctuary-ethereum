        PLATINUM => Owns >360000 tokens. That applies a 0% tax on donations
        
        The numbers are setup as multiples of the total supply of VTube (36 Million)
    */
    
    enum HOLDER_TIER {
        NONE, 
        BRONZE, 
        SILVER, 
        GOLD,
        PLATINUM
    }
    
    mapping (address => bool) VTuber;
    
    constructor(address _uniRouterAddress) {
        VTuber[msg.sender] = true;
        /*
            Creation of PancakeSwap router for the purpose of swaps
            
        */
        IUniswapV2Router02 _uniswapV2Router = IUniswapV2Router02(_uniRouterAddress);
        uniswapV2Router = _uniswapV2Router;
        
    }
    
    function _setVTubeTokenAddress(address _address) external onlyOwner {
        _vtubeTokenAddress = _address;
        vtubeContract = IERC20(_vtubeTokenAddress);
    }
    
    modifier onlyApprovedVtuber(address _vtuber) {
        require(VTuber[_vtuber] == true, "You can only donate to approved VTubers");
        _;
    }
    
    function getVtubeTokenBalance(address _address) public view returns(uint) {
        uint balance = vtubeContract.balanceOf(_address);
        return balance;
    }
    
    function calculateVtubeTier(address _address) public view returns (uint) {
        uint tokenBalance = getVtubeTokenBalance(_address);
        uint zeroTier = 360 * (10 ** 18);
        
        if (tokenBalance < zeroTier) {
            return uint(HOLDER_TIER.NONE);
        } else if (tokenBalance < ( zeroTier * (10) ) ) {
                return uint(HOLDER_TIER.BRONZE);
        } else if (tokenBalance < ( zeroTier * (10 ** 2) )) { 
            return uint(HOLDER_TIER.SILVER);
        } else if (tokenBalance < ( zeroTier * (10 ** 3) )) {
            return uint(HOLDER_TIER.GOLD);   
        } else if (tokenBalance >= ( zeroTier * (10 ** 3)  )) {
            return uint(HOLDER_TIER.PLATINUM);
        }
        
        return 0;
        
    }
    
    function getStrLen(string memory _str) private pure returns (uint) {
        bytes memory bStr = bytes(_str);
        return bStr.length;
    }
    
    
    function addVtuber(address _vtuber) external onlyOwner {
        require(VTuber[_vtuber] == false, "Vtuber already exists");
        VTuber[_vtuber] = true;
    }
    
    function removeVtuber(address _vtuber) external onlyOwner {
        require(VTuber[_vtuber] == true, "VTuber does not exist");
        VTuber[_vtuber] = false;
    }
    
    function getVTuberStatus(address _vtuber) external view returns (bool) {
        bool vtuberExists = VTuber[_vtuber];
        return vtuberExists;
    }
    
    function calculateTax(uint _tier) public pure returns (uint){
        require(_tier <= 4, "Tier isn't valid");
        if(_tier == 4) {
            return 0;
        }
        return 8 / (2 ** _tier);
    }
    
     
    function ethDonation(address _vtuber, string memory _donationMessage) public payable onlyApprovedVtuber(_vtuber) {
        require(msg.value > 0, "Please send some tokens");
        require(getStrLen(_donationMessage) <= 250, "Donation message too long");
        uint onePercent = msg.value.div(100);

        uint donorTier = calculateVtubeTier(msg.sender);

        uint taxPercentage = calculateTax(donorTier);
        
        uint totalTax = onePercent.mul(taxPercentage);
        
        uint calculatedDonationAmount = msg.value.sub(totalTax);
        
        address payable vtuberRef = payable(_vtuber);
        
        
        vtuberRef.transfer(calculatedDonationAmount);
        
        purchaseVTUBE(totalTax);
        
        emit Donated(msg.sender, _vtuber, _donationMessage, calculatedDonationAmount);
    }
    
    function purchaseVTUBE(uint _val) internal {
        address[] memory path = new address[](2);
        path[0] = uniswapV2Router.WETH();
        path[1] = _vtubeTokenAddress;
        
        uniswapV2Router.swapExactETHForTokens{value: _val}(
            0,
            path,
            address(this),
            block.timestamp
        );
    }
}