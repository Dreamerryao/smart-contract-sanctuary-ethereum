pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/Ownable.sol";

contract ThePixelsIncSocialMessageExtensionDummy is Ownable {
    uint256 public messageId;

    function sendMessage(
        uint256 senderTokenId,
        uint256 targetTokenId,
        string memory message
    ) public {
        uint256 currentMessageId = messageId;
        emit MessageSent(
            msg.sender,
            currentMessageId,
            senderTokenId,
            targetTokenId,
            message
        );
        messageId = currentMessageId + 1;
    }

    function updateMessageVisibility(
        uint256 senderTokenId,
        uint256 messageId,
        bool visibility
    ) public {
        emit MessageVisibilityUpdated(msg.sender, messageId, visibility);
    }

    function updateTokenBlockStatus(
        uint256 senderTokenId,
        uint256 targetTokenId,
        bool isBlocked
    ) public {
        emit TokenBlockStatusUpdated(
            msg.sender,
            senderTokenId,
            targetTokenId,
            isBlocked
        );
    }

    event MessageSent(
        address owner,
        uint256 indexed id,
        uint256 indexed senderTokenId,
        uint256 indexed targetTokenId,
        string message
    );

    event MessageVisibilityUpdated(
        address owner,
        uint256 indexed id,
        bool indexed isHidden
    );

    event TokenBlockStatusUpdated(
        address owner,
        uint256 indexed senderTokenId,
        uint256 indexed targetTokenId,
        bool indexed isBlocked
    );
}

