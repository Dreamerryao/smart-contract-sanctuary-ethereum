pragma solidity 0.6.12;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/utils/ReentrancyGuard.sol";
import "@openzeppelin/contracts/cryptography/ECDSA.sol";
/**
 * @notice implementation of the BEND token contract
 * @author Bend
 */
interface  DistributorInterface{
    function claimable(address _addr) external view returns (uint256);
}


contract FeeVault is ReentrancyGuard {
    address public owner;
    address public distributor;
    mapping(uint256 => address) public feeAssets;
    uint256 public feeAssetLength;

    event UPDATE_OWNER_LOG(address indexed newOwner);
    event CLAIM_LOG(address  sender,address token,uint256 amount);
    
    constructor() public{
        owner = msg.sender;
    }

     modifier onlyDistributor() {
        require(distributor == msg.sender, "caller is not the distributor");
        _;
    }

    function setDistributor(address _distributor) external onlyOwner{
        distributor = _distributor;
    }

    modifier onlyOwner() {
        require(owner == msg.sender, "caller is not the owner");
        _;
    }

    function setOwner(address _newOwner) external onlyOwner{
        owner = _newOwner;
        emit UPDATE_OWNER_LOG(owner);
    }

    function setFeeAssetLength(uint256 _feeAssetLength) external onlyOwner{
        feeAssetLength = _feeAssetLength;
    }


    function setAssets(uint256[] calldata ids,address[] calldata assets) external onlyOwner{
        require(ids.length > 0 && assets.length > 0, "ids array is empty");
        require(ids.length == assets.length, "array are not the same length");
        for (uint i = 0; i < ids.length; i++) {
            feeAssets[ids[i]] = assets[i];
        }
    }

    function claim(address sender,uint256 amount) external nonReentrant onlyDistributor {
        uint256 mainAssetVaultBalance = IERC20(feeAssets[0]).balanceOf(address(this));
        require(mainAssetVaultBalance > 0,"mainAssetVaultBalance must > 0");
        for(uint256 i = 1; i < feeAssetLength; i++){
            uint256 vaultBalance = IERC20(feeAssets[i]).balanceOf(address(this));
            uint256 claimAmount = vaultBalance * amount / mainAssetVaultBalance;
            IERC20(feeAssets[i]).transfer(sender,claimAmount);
            emit CLAIM_LOG(sender,feeAssets[i],claimAmount);
        }
        IERC20(feeAssets[0]).transfer(sender,amount);
        emit CLAIM_LOG(sender,feeAssets[0],amount);  
    }

    function claimable(address user,address[] calldata assets) external view returns(uint256[] memory){
        uint256[] memory result = new uint256[](assets.length);
        for(uint256 i = 0; i < feeAssetLength; i++){
            result[i] = DistributorInterface(distributor).claimable(user);
        }
        return result;
    }

}

