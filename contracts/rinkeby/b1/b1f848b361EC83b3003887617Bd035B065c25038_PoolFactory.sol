pragma solidity ^0.8.9;

import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "@openzeppelin/contracts/utils/cryptography/draft-EIP712.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";

import "./interfaces/IPoolFactory.sol";

import "./InvestmentPool.sol";

contract PoolFactory is IPoolFactory, EIP712 {
    using EnumerableSet for EnumerableSet.AddressSet;

    bytes32 internal constant CREATE_TYPEHASH =
        keccak256("Create(address investmentToken,address rewardsToken,uint256 tokensHardCap)");

    address public override admin;
    address public override guildMaster;

    uint256 public immutable override minCashoutAmount;
    uint256 public override minInvestmentAmount;

    EnumerableSet.AddressSet internal investmentTokens;
    EnumerableSet.AddressSet internal rewardsTokens;

    address[] public investmentPools;

    modifier onlyAdmin() {
        require(msg.sender == admin, "PoolFactory: Only admin can call this function.");
        _;
    }

    constructor(
        address _admin,
        address _guildMaster,
        uint256 _minCashoutAmount,
        uint256 _minInvestmentAmount,
        address[] memory _investmentTokens,
        address[] memory _rewardsTokens
    ) EIP712("PoolFactory", "1") {
        require(_minCashoutAmount > 0, "PoolFactory: Incorrect min cashout amount.");

        _setAdmin(_admin);
        _setGuildMaster(_guildMaster);

        minCashoutAmount = _minCashoutAmount;

        _setMinInvestmentAmount(_minInvestmentAmount);

        _updateTokensArr(investmentTokens, _investmentTokens, true);
        _updateTokensArr(rewardsTokens, _rewardsTokens, true);
    }

    function deployInvestmentPool(
        address _investmentToken,
        address _rewardsToken,
        uint256 _tokensHardCap,
        bytes32 _r,
        bytes32 _s,
        uint8 _v
    ) external override {
        require(
            investmentTokens.contains(_investmentToken) && rewardsTokens.contains(_rewardsToken),
            "PoolFactory: Incorrect investment or reward token."
        );

        bytes32 _structHash = keccak256(
            abi.encode(CREATE_TYPEHASH, _investmentToken, _rewardsToken, _tokensHardCap)
        );

        address _signer = ECDSA.recover(_hashTypedDataV4(_structHash), _v, _r, _s);
        require(_signer == admin, "PoolFactory: Invalid signature.");

        InvestmentPool _newPool = new InvestmentPool(
            _investmentToken,
            _rewardsToken,
            _tokensHardCap
        );

        investmentPools.push(address(_newPool));

        emit InvestmentPoolDeployed(address(_newPool), _investmentToken, _rewardsToken);
    }

    function updateInvestmentTokens(address[] memory _tokensToUpdate, bool _isAdding)
        external
        override
        onlyAdmin
    {
        _updateTokensArr(investmentTokens, _tokensToUpdate, _isAdding);
    }

    function updateRewardsTokens(address[] memory _tokensToUpdate, bool _isAdding)
        external
        override
        onlyAdmin
    {
        _updateTokensArr(rewardsTokens, _tokensToUpdate, _isAdding);
    }

    function setAdmin(address _newAdmin) external override onlyAdmin {
        _setAdmin(_newAdmin);
    }

    function setGuildMaster(address _newGuildMaster) external override onlyAdmin {
        _setGuildMaster(_newGuildMaster);
    }

    function setMinInvestmentAmount(uint256 _newMinInvestmentAmount) external override onlyAdmin {
        _setMinInvestmentAmount(_newMinInvestmentAmount);
    }

    function getInvestmentPoolsCount() external view override returns (uint256) {
        return investmentPools.length;
    }

    function getInvestmentTokens() external view override returns (address[] memory) {
        return investmentTokens.values();
    }

    function getRewardsTokens() external view override returns (address[] memory) {
        return rewardsTokens.values();
    }

    function _setAdmin(address _newAdmin) internal {
        _zeroAddressCheck(_newAdmin, "admin");

        admin = _newAdmin;
    }

    function _setGuildMaster(address _newGuildMaster) internal {
        _zeroAddressCheck(_newGuildMaster, "guild master");

        guildMaster = _newGuildMaster;
    }

    function _setMinInvestmentAmount(uint256 _newMinInvestmentAmount) internal {
        require(
            _newMinInvestmentAmount >= minCashoutAmount,
            "PoolFactory: Incorrect min investment amount."
        );

        minInvestmentAmount = _newMinInvestmentAmount;
    }

    function _updateTokensArr(
        EnumerableSet.AddressSet storage _tokensArr,
        address[] memory _tokensToUpdate,
        bool _isAdding
    ) internal {
        for (uint256 i; i < _tokensToUpdate.length; i++) {
            if (_isAdding) {
                _zeroAddressCheck(_tokensToUpdate[i], "token contract");

                _tokensArr.add(_tokensToUpdate[i]);
            } else {
                _tokensArr.remove(_tokensToUpdate[i]);
            }
        }
    }

    function _zeroAddressCheck(address _toCheck, string memory _toCheckName) internal pure {
        require(
            _toCheck != address(0),
            string(abi.encodePacked("PoolFactory: Bad ", _toCheckName, " address."))
        );
    }
}

