import "@openzeppelin/contracts/token/ERC20/extensions/IERC20Metadata.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/utils/math/Math.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

import "./interfaces/IPoolFactory.sol";
import "./interfaces/IInvestmentPool.sol";

import "./libs/DecimalsConverter.sol";

contract InvestmentPool is IInvestmentPool {
    using DecimalsConverter for uint256;
    using SafeERC20 for IERC20Metadata;
    using Math for uint256;

    uint256 public constant DECIMAL = 10**27;

    IERC20Metadata public immutable investmentToken;
    IERC20Metadata public immutable rewardsToken;

    IPoolFactory public poolFactory;

    bool public isCashoutDisabled;

    uint256 public tokensHardCap;
    uint256 public totalInvestedAmount;

    uint256 public cumulativeSum;

    uint256 public firstCashoutIndex;
    uint256 public totalCashoutsAmount;

    address[] public createdCashouts;

    mapping(address => UserInvestInfo) public investedInfos;
    mapping(address => UserCashoutInfo) public cashoutInfos;

    modifier onlyAdmin() {
        require(
            msg.sender == poolFactory.admin(),
            "InvestmentPool: Only admin can call this function."
        );
        _;
    }

    modifier onlyGuildMaster() {
        require(
            msg.sender == poolFactory.guildMaster(),
            "InvestmentPool: Only guild master can call this function."
        );
        _;
    }

    constructor(
        address _investmentToken,
        address _rewardsToken,
        uint256 _tokensHardCap
    ) {
        investmentToken = IERC20Metadata(_investmentToken);
        rewardsToken = IERC20Metadata(_rewardsToken);

        poolFactory = IPoolFactory(msg.sender);

        tokensHardCap = _tokensHardCap;
    }

    function withdrawInvestmentTokens(address _receiver) external override onlyAdmin {
        uint256 _currentBalance = investmentToken.balanceOf(address(this));

        require(_currentBalance > 0, "InvestmentPool: Nothing to withdraw.");

        investmentToken.safeTransfer(_receiver, _currentBalance);

        emit InvestmentTokensWithdrawn(
            _receiver,
            _currentBalance.convertTo18(investmentToken.decimals())
        );
    }

    function setTokensHardCap(uint256 _newTokensHardCap) external override onlyGuildMaster {
        require(
            _newTokensHardCap >= totalInvestedAmount,
            "InvestmentPool: Incorrect new tokens hard cap."
        );

        tokensHardCap = _newTokensHardCap;
    }

    function setIsCashoutDisabled(bool _newValue) external override onlyGuildMaster {
        isCashoutDisabled = _newValue;
    }

    function addRewards(uint256 _amountToAdd) external override {
        require(totalInvestedAmount > 0, "InvestmentPool: Pool is empty.");

        uint256 _rewardsTokenDecimals = rewardsToken.decimals();

        _amountToAdd = _amountToAdd.round18(_rewardsTokenDecimals);

        rewardsToken.safeTransferFrom(
            msg.sender,
            address(this),
            _amountToAdd.convertFrom18(_rewardsTokenDecimals)
        );

        cumulativeSum += (_amountToAdd * DECIMAL) / totalInvestedAmount;
    }

    function invest(uint256 _amountToInvest) external override {
        _amountToInvest = _amountToInvest.min(
            tokensHardCap + totalCashoutsAmount - totalInvestedAmount
        );

        uint256 _investmentTokenDecimals = investmentToken.decimals();

        _amountToInvest = _amountToInvest.round18(_investmentTokenDecimals);

        require(_amountToInvest > 0, "InvestmentPool: Hard cap was reached.");

        UserInvestInfo memory _investInfo = investedInfos[msg.sender];

        investedInfos[msg.sender] = UserInvestInfo(
            _investInfo.investedAmount + _amountToInvest,
            cumulativeSum,
            _countUserRewards(_investInfo)
        );

        investmentToken.safeTransferFrom(
            msg.sender,
            address(this),
            _amountToInvest.convertFrom18(_investmentTokenDecimals)
        );

        _amountToInvest = _closeCashoutOrders(_amountToInvest);

        totalInvestedAmount += _amountToInvest;

        emit Invested(msg.sender, _amountToInvest);
    }

    function claimRewards() external override {
        UserInvestInfo memory _investInfo = investedInfos[msg.sender];

        uint256 _rewardsAmount = _countUserRewards(_investInfo);

        require(_rewardsAmount > 0, "InvestmentPool: Nothing to claim.");

        investedInfos[msg.sender] = UserInvestInfo(_investInfo.investedAmount, cumulativeSum, 0);

        rewardsToken.safeTransfer(
            msg.sender,
            _rewardsAmount.convertFrom18(rewardsToken.decimals())
        );

        emit RewardsClaimed(msg.sender, _rewardsAmount);
    }

    function createCashoutOrder(uint256 _cashoutAmount) external override {
        require(!isCashoutDisabled, "InvestmentPool: Cashout orders disabled.");
        require(
            cashoutInfos[msg.sender].cashoutAmount == 0,
            "InvestmentPool: Cashout order already created."
        );
        require(
            _cashoutAmount >= poolFactory.minCashoutAmount() &&
                _cashoutAmount <= investedInfos[msg.sender].investedAmount,
            "InvestmentPool: Incorrect cashout amount."
        );

        uint256 _cashoutIndex = createdCashouts.length;

        cashoutInfos[msg.sender] = UserCashoutInfo(_cashoutAmount, _cashoutIndex);

        createdCashouts.push(msg.sender);
        totalCashoutsAmount += _cashoutAmount;

        emit CashoutOrderCreated(msg.sender, _cashoutAmount, _cashoutIndex);
    }

    function closeCashoutOrder() external override {
        UserCashoutInfo memory _userCashoutInfo = cashoutInfos[msg.sender];

        require(
            _userCashoutInfo.cashoutAmount != 0,
            "InvestmentPool: Cashout order does not exist."
        );

        delete cashoutInfos[msg.sender];
        delete createdCashouts[_userCashoutInfo.cashoutIndex];

        totalCashoutsAmount -= _userCashoutInfo.cashoutAmount;

        emit CashoutOrderClosed(msg.sender, _userCashoutInfo.cashoutIndex);
    }

    function getUserRewards(address _userAddr) external view override returns (uint256) {
        return _countUserRewards(investedInfos[_userAddr]);
    }

    function getAllCashoutsCount() external view override returns (uint256) {
        return createdCashouts.length;
    }

    function getActiveCashoutsCount() external view override returns (uint256 _cashoutsCount) {
        uint256 _createdCashoutsCount = createdCashouts.length;

        for (uint256 i = firstCashoutIndex; i < _createdCashoutsCount; i++) {
            if (createdCashouts[i] == address(0)) {
                continue;
            }

            _cashoutsCount++;
        }
    }

    function _closeCashoutOrders(uint256 _investAmount) internal returns (uint256) {
        uint256 _createdCashoutsCount = createdCashouts.length;
        uint256 _firstCashoutIndex = firstCashoutIndex;
        uint256 _totalCashoutsAmount = totalCashoutsAmount;
        uint256 _investmentTokenDecimals = investmentToken.decimals();

        for (uint256 i = _firstCashoutIndex; i < _createdCashoutsCount; i++) {
            _firstCashoutIndex++;

            address _currentUser = createdCashouts[i];

            if (_currentUser == address(0)) {
                continue;
            }

            UserCashoutInfo memory _userCashoutInfo = cashoutInfos[_currentUser];
            uint256 _toTransferAmount = _userCashoutInfo.cashoutAmount.min(_investAmount);

            _investAmount -= _toTransferAmount;
            _totalCashoutsAmount -= _toTransferAmount;

            UserInvestInfo memory _investInfo = investedInfos[_currentUser];

            investedInfos[_currentUser].investedAmount =
                _investInfo.investedAmount -
                _toTransferAmount;
            investedInfos[_currentUser].aggregatedRewards = _countUserRewards(_investInfo);

            cashoutInfos[_currentUser].cashoutAmount =
                _userCashoutInfo.cashoutAmount -
                _toTransferAmount;

            if (_userCashoutInfo.cashoutAmount - _toTransferAmount == 0) {
                delete createdCashouts[_userCashoutInfo.cashoutIndex];
            } else {
                _firstCashoutIndex--;
            }

            investmentToken.safeTransfer(
                _currentUser,
                _toTransferAmount.convertFrom18(_investmentTokenDecimals)
            );

            if (_investAmount == 0) {
                break;
            }
        }

        firstCashoutIndex = _firstCashoutIndex;
        totalCashoutsAmount = _totalCashoutsAmount;

        return _investAmount;
    }

    function _countUserRewards(UserInvestInfo memory _investInfo)
        internal
        view
        returns (uint256 _aggregatedRewards)
    {
        _aggregatedRewards = _investInfo.aggregatedRewards;

        if (_investInfo.investedAmount > 0 && cumulativeSum > _investInfo.lastCumulativeSum) {
            _aggregatedRewards +=
                ((cumulativeSum - _investInfo.lastCumulativeSum) * _investInfo.investedAmount) /
                DECIMAL;
        }
    }
}

