        if (address(tokenData.saleToken) == address(0)) {
            require(
                msg.value == (tokenData.tokenPrice).mul(tokensNumber),
                "Invalid eth for purchasing"
            );
        } else {
            require(msg.value == 0, "ETH_NOT_ALLOWED");

            tokenData.saleToken.safeTransferFrom(
