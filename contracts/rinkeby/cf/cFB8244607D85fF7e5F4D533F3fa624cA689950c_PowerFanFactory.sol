import '@openzeppelin/contracts/proxy/Clones.sol';
import '@openzeppelin/contracts/utils/Address.sol';
import '@openzeppelin/contracts/access/Ownable.sol';
import '@openzeppelin/contracts/token/ERC20/IERC20.sol';
import "@openzeppelin/contracts/utils/ReentrancyGuard.sol";

interface IToken {
    function initialize(
        address rootOwner,
        address newTokenSale,
        string memory name,
        string memory symbol,
        string memory uri,
        uint256 amount
    ) external;

    function setPaused() external;

    function setUnpaused() external;

    function mint() external;
}

contract PowerFanFactory is Ownable, ReentrancyGuard{
    using Clones for address;
    using Address for address;

    address public pfan;
    address public proxyImplementationERC20;
    address public newTokenSale;

    address[] private tokens;

    mapping(address => string) public tokenToname;

    event TokenCreated(address indexed tokenAddress, string name, string symbol);

    constructor(
        address _proxyImplementationERC20,
        address _newTokenSale
    ) {
        proxyImplementationERC20 = _proxyImplementationERC20;
        pfan = 0x098b5Df20306086bEA354d5e162DD6D0f357D889;
        newTokenSale = _newTokenSale;
    }

    function getProxyERC20Address() public view returns (address) {
        return proxyImplementationERC20;
    }

    receive() external payable {}

    /**
     * @dev Any user can create their own PowerFan colllection
     * @param _name name of the collection
     **/

    function createToken(
        string memory _name,
        string memory _symbol,
        string memory _uri,
        uint256 amount
    ) public returns (address) {
        uint256 allowed = IERC20(pfan).allowance(msg.sender, address(this));

        require(allowed >= 1000 ether, 'Not enough allowance');
        require(amount >= 1000 ether, 'Invalid amount');

        IERC20(pfan).transferFrom(msg.sender, address(this), amount);

        address token = proxyImplementationERC20.clone();

        IToken(token).initialize(owner(), newTokenSale, _name, _symbol, _uri, amount);

        tokens.push(token);

        tokenToname[token] = _name;

        emit TokenCreated(token, _name, _symbol);

        return token;
    }

    /**
     * @dev Only owner of factory can change the address of implementation
     * @param imp address of new implementation
     */
    function changeImplementation(address imp) external nonReentrant onlyOwner {
        require(imp != address(0));
        require(imp != proxyImplementationERC20);
        require(imp.isContract());
        proxyImplementationERC20 = imp;
    }

    /**
     * @dev Only Factory owner can pause the suspecious token smart contract
     * @param _token PowerFan Collection address
     */
    function pauseToken(address _token) public onlyOwner {
        IToken(_token).setPaused();
    }

    /**
     * @dev Only Factory owner can pause the suspecious colllection smart contract
     * @param _token PowerFan Collection address
     */
    function unpauseToken(address _token) public onlyOwner {
        IToken(_token).setUnpaused();
    }

    /**
     * @dev To check either this collection is created by PowerFan or not
     * @param _token name of the collection
     * @param _name name of the collection
     * @return bool
     */

    function isPowerFanOriginatorOfToken(address _token, string memory _name) public view returns (bool) {
        string memory tokenName = tokenToname[_token];
        if (keccak256(abi.encodePacked(tokenName)) == keccak256(abi.encodePacked((_name)))) return true;
        return false;
    }

    function withdrawTokens(address _to, address _token) public onlyOwner {
        uint256 balance = IERC20(_token).balanceOf(address(this));
        if (balance > 0) IERC20(_token).transfer(_to, balance);
    }

    function getTokens() external view returns (address[] memory) {
        return tokens;
    }
}

