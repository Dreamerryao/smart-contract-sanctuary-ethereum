/**
 * @title MultiMint ERC721
 * @author Jonathan Giamporcaro, Alexander Zimin, Viktor Voitenko
 * @notice Functionality for multi-minting tokens on pre-sale and public sale phases. Implemented shared revenue mechanism
 * @dev Contain draft comments with author name prefix "vvv" - they will be removed.
 */
contract MultiMintContractNFT is ERC721, Signable, PaymentSplitter {
    // Phase States: None - can't mint, Pre Sale - only mint with sign, Main Sale - only regular mint
    enum Phase {
        NONE,
        PRE_SALE,
        MAIN_SALE
    }

    // Current phase of the contract
    Phase private _phase;


    // Address where all money from the contract will go if the owner of the contract will call withdraw function
    // TODO: Check before final upload
    address private constant WITHDARAWAL_ADDRESS =
        0xC55dA65c626Bad25532bE0d4f6B44aBFD733A152;

    // Counter used for token number in minting
    uint256 private _nextTokenCount = 1;

    // Base token and contract URI
    string private baseTokenURI;
    string private baseContractURI;

    /// @notice Max token supply - state variable
    /// @return max token supply
    uint256 public immutable maxSupply;

    /// @notice Mint price, can be configured - state variable
    /// @return mint prcie, 0.3 ether by default
    uint256 public mintPrice = 0.3 ether;

    /// @notice Number of mints account can do on the public sale - state variable
    /// @return number of mints per account
    uint256 public mintMaxAmountPerAccount = 5;

    
    /// @notice Proxy contract for tracking afterTokenTransfer call - state variable
    /// @return proxy contract address
    IProxyTracking public proxyTrackingContract;

    /// @notice Number of minted tokens per account - state variable
    /// @return mapping
    mapping(address => uint256) public minted;

    event OwnerMint(
        address to,
        uint256 amount
    );

    event Mint(
        address to,
        uint256 amount,
        Phase phase
    );

    // Modifier is used to check if the phase rule is met
    modifier phaseRequired(Phase phase_) {
        if (phase_ != _phase) revert Errors.MintNotAvailable();
        _;
    }

    // Modifier is used to check if at least a minimal amount of money was sent
    modifier costs(uint256 amount) {
        if (msg.value < mintPrice * amount) revert Errors.InsufficientFunds();
        _;
    }

    /**
     * @notice Initialize the contract. Call once upon deploy.
     * @param _maxSupply Max token amount can be supplied
     * @param _baseTokenURI base uri of the token used for concatenation with tokenId
     * @param _baseContractURI Need to clarify(?)
     * @param _name Name of the token according to ERC721 standard
     * @param _symbol Symbol of the token according to ERC721 standard
     * @param _payees Payees addresses must be same length as shares
     * @param _shares Corresponding by indexes payees shares.
     */
    constructor(
        uint256 _maxSupply,
        string memory _baseTokenURI,
        string memory _baseContractURI,
        string memory _name,
        string memory _symbol,
        address[] memory _payees, 
        uint256[] memory _shares
    ) ERC721(_name, _symbol)
      PaymentSplitter(_payees, _shares)
    {
        maxSupply = _maxSupply;
        baseTokenURI = _baseTokenURI;
        baseContractURI = _baseContractURI;
    }

    /** 
     * @notice Contract owner can call this function to mint `amount` of tokens into account with the address `to`
     * @param to Address on which tokens will be minted
     * @param amount Amount of tokens to mint
     */
    function ownerMint(address to, uint256 amount) external onlyOwner {
        // event - Transfer
        if (_nextTokenCount + amount - 1 > maxSupply)
            revert Errors.SupplyLimitReached();

        for (uint256 i; i < amount; ) {
            _safeMint(to, _nextTokenCount);

            unchecked {
                ++_nextTokenCount;
                ++i;
            }
        }
        emit OwnerMint(to, amount);
    }

    /**
     * @notice Function used to do minting on pre-sale phase (with signature)
     * @dev mintMaxAmountPerAccountInPrivateSale need to be chcked whether it should be here
     * @param amount Amount of tokens will be minted
     * @param mintMaxAmountPerAccountInPrivateSale Need to understand why it here?
     * @param signature User signature
     */
    function preSaleMint(uint256 amount, uint256 mintMaxAmountPerAccountInPrivateSale, bytes calldata signature) // vvvcheck is it ok that we specify amount?
        external
        payable
        costs(amount)
        phaseRequired(Phase.PRE_SALE)
    {
        // event - 
        if (!_verify(signer(), _hash(msg.sender, mintMaxAmountPerAccountInPrivateSale), signature))
            revert Errors.InvalidSignature();

        if (minted[msg.sender] + amount > mintMaxAmountPerAccountInPrivateSale)
            revert Errors.AccountMaxMintAmountExceeded();
            
        _mintLogic(amount);
        emit Mint(msg.sender, amount, Phase.PRE_SALE);
    }

    /**
     * @notice Mint specified amount of tokens to the sender address 
     * @dev Ether amount in msg.value should be specified accordingly
     * @param amount Amount of tokens will be minted
     */
    function mint(uint256 amount) external payable costs(amount) phaseRequired(Phase.MAIN_SALE) {
        // event - 
        if (minted[msg.sender] + amount > mintMaxAmountPerAccount)
            revert Errors.AccountMaxMintAmountExceeded();

        _mintLogic(amount);
        emit Mint(msg.sender, amount, Phase.MAIN_SALE);
    }

    /**
     * @notice Contract owner can call this function to withdraw all money from the contract into a defined wallet
     */
    function withdrawAll() external onlyOwner { // vvvcheck - probably remove it
        uint256 balance = address(this).balance;
        if (balance == 0) revert Errors.NothingToWithdraw();

        (bool success, ) = WITHDARAWAL_ADDRESS.call{value: balance}("");
        if (!success) revert Errors.WithdrawFailed();
    }

    /**
     * @notice Set maximum amount of tokens can be minted per address
     * @param mintMaxAmountPerAccount_ Maximum amount of tokens can be minted per address
     */
    function setMaxMintAmountPerAccount(uint256 mintMaxAmountPerAccount_) external onlyOwner {
        if (mintMaxAmountPerAccount == 0) revert Errors.InvalidMintMaxAmount();
        mintMaxAmountPerAccount = mintMaxAmountPerAccount_;
    }

    /**
     * @notice Contract owner can call this function to set minting price on pre-sale and main-sale
     * @param mintPrice_ Mint price of the token
     */
    function setMintPrice(uint256 mintPrice_) external onlyOwner {
        if (mintPrice_ == 0) revert Errors.InvalidMintPrice();
        mintPrice = mintPrice_;
    }

    /**
     * @notice Contract owner can call this function to set the proxy tracking contract address.
     * (which gets a call of afterTokenTransfer function of the original contract)
     * @param proxyTrackingContract_ Proxy contract address
     */
    function setProxyTrackingContract(IProxyTracking proxyTrackingContract_)
        external
        onlyOwner
    {
        proxyTrackingContract = proxyTrackingContract_;
    }

    /**
     * @notice Set contract URI
     * @dev need to check for what
     * @param baseContractURI_ Base contract URI
     */
    function setContractURI(string calldata baseContractURI_)
        external
        onlyOwner
    {
        if (bytes(baseContractURI_).length == 0)
            revert Errors.InvalidBaseContractURL();

        baseContractURI = baseContractURI_;
    }

    /**
     * @notice Set Base URI which is used to generate tokenURI
     * @param baseURI_ Basic URL Path which will be concatenated with token id so that we'll get token URI
     */
    function setBaseURI(string calldata baseURI_) external onlyOwner {
        if (bytes(baseURI_).length == 0) revert Errors.InvalidBaseURI();

        baseTokenURI = baseURI_;
    }

    /**
     * @notice Set current phase
     * @param phase_ Phase
     * @dev set pre-sale, main sale or none
     */
    function setPhase(Phase phase_) external onlyOwner {
        _phase = phase_;
    }

    /**
     * @notice Total supply of the tokens
     * @dev _nextTokenCount - 1 actually
     * @return Total amount of tokens
     */
    function totalSupply() external view returns (uint256) {
        return _nextTokenCount - 1;
    }

    /**
     * @notice Return contract URI
     * @dev Need to check it
     * @return Contract URI
     */
    function contractURI() external view returns (string memory) { // vvvcheck - what is this?
        return baseContractURI;
    }

    /**
     * @notice Current phase: none, pre-sale or main sale
     * @return Current phase: pre-sale, main sale or none
     */
    function phase() external view returns (Phase) {
        return _phase;
    }

    /** 
     * @notice Burn specified token ID from the sender address
     * @dev minted array is not getting reset, nextTokenCount is not getting decreassed. Interesting why...
     * @param id ID of tokens will be burned
     */
    function burn(uint256 id) external {
        if (msg.sender != ownerOf(id)) revert Errors.NotOwner();
        _burn(id); // vvverr - minted array is not getting reset, nextTokenCount is not getting decreassed
    }

    /** 
     * @notice Burn specified token ID from the sender address
     * @dev Use proxyTrackingContract to call `afterTokenTransfer` callback. This proxy contract can be with the callback hence.
     * @param from Address
     * @param to Address
     * @param id ID of token will be transfered
     */
    function transferFrom(
        address from,
        address to,
        uint256 id
    ) public virtual override {
        super.transferFrom(from, to, id);
        _afterTokenTransfer(from, to, id);
    }

    /** 
     * @notice Full token URI by ID
     * @param tokenId ID of token
     * @return Token url
     */
    function tokenURI(uint256 tokenId)
        public
        view
        override
        returns (string memory)
    {
        if (ownerOf(tokenId) == address(0)) revert Errors.TokenDoesNotExist();

        string memory baseURI = _baseURI();
        return
            bytes(baseURI).length > 0
                ? string(
                    abi.encodePacked(baseURI, Helpers.uint2string(tokenId))
                )
                : "";
    }

    function _baseURI() internal view virtual returns (string memory) {
        return baseTokenURI;
    }

    function _mint(address to, uint256 id) internal virtual override {
        super._mint(to, id);
        _afterTokenTransfer(address(0), to, id);
    }

    function _burn(uint256 id) internal virtual override {
        address owner = _ownerOf[id];
        super._burn(id);
        unchecked {
             minted[owner] -=1;
             _nextTokenCount -=1;
        }
        _afterTokenTransfer(owner, address(0), id);
    }

    // Function is overridden to do a proxy call into the proxy tracking contract if it is not zero
    function _afterTokenTransfer(
        address from,
        address to,
        uint256 tokenId
    ) internal virtual {
        if (address(proxyTrackingContract) != address(0)) {
            proxyTrackingContract.afterTokenTransfer(from, to, tokenId);
        }
    }

    function _mintLogic(uint256 amount) private {
        if (msg.sender.code.length > 0) revert Errors.ContractCantMint();
        if (_nextTokenCount + amount - 1 > maxSupply)
            revert Errors.SupplyLimitReached();

        for (uint256 i; i < amount; ) {
            // smart-contracts are not allowed to call the method -- that means safeMint is useless
            _mint(msg.sender, _nextTokenCount);

            unchecked {
                ++_nextTokenCount;
                ++i;
            }
        }

        minted[msg.sender] += amount;
    }

    function _verify(
        address signer,
        bytes32 hash,
        bytes calldata signature
    ) private pure returns (bool) {
        return signer == ECDSA.recover(hash, signature);
    }

    function _hash(address account, uint256 amount) private pure returns (bytes32) {
        return
            ECDSA.toEthSignedMessageHash(keccak256(abi.encodePacked(account, amount)));
    }
}

