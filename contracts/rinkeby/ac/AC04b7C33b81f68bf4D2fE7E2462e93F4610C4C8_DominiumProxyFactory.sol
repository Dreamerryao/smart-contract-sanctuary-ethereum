    function _deploySalt(address deployer, bytes32 salt)
        internal
        pure
        returns (bytes32)
    {
        return keccak256(abi.encodePacked(deployer, salt));
    }

    function changeImplementation(address implementation_)
        external
        onlyAuthorized
    {
        implementation = implementation_;
    }
