pragma solidity ^0.8.0;

import "./MarketplaceV1.sol";

contract MarketplaceV2 is MarketplaceV1 {
  uint8 public constant TREASURY_CONTRIBUTION = 25; // per thousand (0.25% == 25 / 1000)
  address public treasury_;

  function setTreasury(address _treasury) external onlyOwner {
    treasury_ = _treasury;
  }

  function matchOrder(uint256 _orderId)
    external
    payable
    virtual
    override
    nonReentrant
    isExistOrder(_orderId)
    returns (bool)
  {
    uint256 _price = orderPrices_[_orderId];
    uint256 fee = (_price * TREASURY_CONTRIBUTION) / 10e3;
    require(msg.value >= _price + fee, "Insufficient");

    // sold
    (bool sent, ) = orders_[_orderId].seller.call{ value: _price - fee }("");
    require(sent, "Failed to send ether to seller");

    // contribute to treasury
    (bool okk, ) = treasury_.call{ value: fee * 2 }("");
    require(okk, "Failed to send ether to treasury");

    _matchOrder(msg.sender, _orderId);

    return true;
  }
}

