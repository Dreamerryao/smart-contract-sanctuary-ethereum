import "@openzeppelin/contracts/token/ERC721/IERC721.sol";

struct OrderInfo {
  address seller;
  address buyer;
  address mintedAt;
  uint256 tokenId;
}

contract BaseMarketplace {
  // order id => order
  mapping(uint256 => OrderInfo) public orders_;
  uint256 public orderCounter_;
  // contract address => token id => listed
  mapping(address => mapping(uint256 => bool)) public listedTokens_;

  // #region Modifier
  modifier isExistOrder(uint256 _orderId) {
    OrderInfo memory _order = orders_[_orderId];

    require(listedTokens_[_order.mintedAt][_order.tokenId] == true, "Order is not found");
    _;
  }

  modifier isNotListed(address _mintedAt, uint256 _tokenId) {
    require(listedTokens_[_mintedAt][_tokenId] == false, "NFT is already listed");
    _;
  }

  // #endregion

  // #region change functions
  function _createOrder(address _mintedAt, uint256 _tokenId) internal virtual returns (uint256) {
    // this will valid the `_tokenId` for us
    IERC721(_mintedAt).transferFrom(msg.sender, address(this), _tokenId);

    uint256 orderId = orderCounter_;
    orders_[orderId] = OrderInfo({
      seller: msg.sender,
      buyer: address(0),
      mintedAt: _mintedAt,
      tokenId: _tokenId
    });
    listedTokens_[_mintedAt][_tokenId] = true;
    orderCounter_ += 1;

    return orderId;
  }

  function _matchOrder(address _to, uint256 _orderId) internal virtual returns (bool) {
    OrderInfo storage _order = orders_[_orderId];

    // this will valid the approval of `_tokenId` for us
    IERC721(_order.mintedAt).transferFrom(address(this), _to, _order.tokenId);
    _order.buyer = _to;
    listedTokens_[_order.mintedAt][_order.tokenId] = false;

    return true;
  }

  // seller == buyer =>  canceled order
  function _cancelOrder(uint256 _orderId) internal virtual returns (bool) {
    require(msg.sender == orders_[_orderId].seller, "Only seller can cancel");

    return _matchOrder(msg.sender, _orderId);
  }

  // #endregion
}

