import "./MarketplaceV2.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";

/**
 * 1. Alice stakes NFT1 with 100 hash rate
 * 2. Bob stakes NFT2 with 150 hash rate
 * 3. after 1 days, Alice withdraw
 * 4. after 2 days, Bob withdraw
 *
 * two plus two is four
 * minus one that's three
 * quick maths
 *
 * Alice's rewards = rewardRate * (100 / 250) * 24 * 3600 = 0.4 * R
 * Bob's rewards = rewardRate * (100 / 250) * 24 * 3600
 *                 + rewardRate * (100 / 100) * 24 * 3600
 *               = 1.4 * rewardRate

 * instead of storing timestamp every time user stake/un-stake (gas price reason) like
 * 
  mapping(uint => uint) totalSupplyAt;
  mapping(uint => mapping(address => uint)) balanceAt;
  uint[] timestamps;

  uint rewards = 0;
  for (uint i = 0; i < timestamps.length; i++) {
    uint t = timestamps[i];
    reward += (rewardRate * balanceAt[t][msg.sender]) / totalSupplyAt[t]
  }
 * 
 * we recalculate the user's reward every time.
 */
contract MarketplaceV3 is MarketplaceV2 {
  using SafeERC20 for IERC20;

  /* ========== STATE VARIABLES ========== */

  // erc721 => token id => hash rate (times 1e18)
  mapping(address => mapping(uint256 => uint256)) public hashRates;
  IERC20 public rewardToken;

  uint256 public rewardRate;
  uint256 public lastUpdateTime;
  uint256 public rewardPerTokenStored;

  mapping(address => uint256) public userRewardPerTokenPaid;
  mapping(address => uint256) public rewards;

  uint256 public totalSupply;
  mapping(address => uint256) public balances;

  /* ========== MODIFIERS ========== */

  modifier hasHashRate(address _mintedAt, uint256 _tokenId) {
    require(hashRates[_mintedAt][_tokenId] > 0, "NFT not have hash rate.");
    _;
  }
  modifier updateReward(address account) {
    rewardPerTokenStored = rewardPerToken();
    lastUpdateTime = block.timestamp;

    rewards[account] = earned(account);
    userRewardPerTokenPaid[account] = rewardPerTokenStored;
    _;
  }

  /* ========== VIEWS ========== */

  function rewardPerToken() public view returns (uint256) {
    if (totalSupply == 0) {
      return rewardPerTokenStored;
    }
    return
      rewardPerTokenStored +
      (((block.timestamp - lastUpdateTime) * rewardRate * 1e18) / totalSupply);
  }

  function earned(address account) public view returns (uint256) {
    return
      ((balances[account] * (rewardPerToken() - userRewardPerTokenPaid[account])) / 1e18) +
      rewards[account];
  }

  /* ========== MUTATIVE FUNCTIONS ========== */

  function stake(address _mintedAt, uint256 _tokenId)
    external
    nonReentrant
    hasHashRate(_mintedAt, _tokenId)
    updateReward(msg.sender)
  {
    IERC721(_mintedAt).transferFrom(msg.sender, address(this), _tokenId);

    uint256 amount = hashRates[_mintedAt][_tokenId];
    totalSupply += amount;
    balances[msg.sender] += amount;
  }

  function withdraw(address _mintedAt, uint256 _tokenId)
    external
    nonReentrant
    updateReward(msg.sender)
  {
    IERC721(_mintedAt).transferFrom(address(this), msg.sender, _tokenId);

    uint256 amount = hashRates[_mintedAt][_tokenId];
    totalSupply -= amount;
    balances[msg.sender] -= amount;
  }

  function getReward() public nonReentrant updateReward(msg.sender) {
    uint256 reward = rewards[msg.sender];
    if (reward > 0) {
      rewards[msg.sender] = 0;
      rewardToken.safeTransfer(msg.sender, reward);
    }
  }

  function setRewardRate(uint256 _rewardRate) external onlyOwner {
    rewardRate = _rewardRate;
  }

  function setHashRate(
    address _mintedAt,
    uint256 _tokenId,
    uint256 _hashRate
  ) external onlyOwner {
    require(_hashRate > 0, "Hash rate must be large than zero.");
    hashRates[_mintedAt][_tokenId] = _hashRate;
  }

  function setRewardToken(address _address) external onlyOwner {
    rewardToken = IERC20(_address);
  }
}

