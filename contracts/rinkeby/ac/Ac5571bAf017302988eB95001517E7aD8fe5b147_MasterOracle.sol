/**
 * @title gain's Master
 * @dev Controller for an elastic supply currency based on the uFragments Ideal Money protocol a.k.a. Ampleforth.
 *      uFragments operates symmetrically on expansion and contraction. It will both split and
 *      combine coins to maintain a stable unit price.
 *
 *      This component regulates the token supply of the uFragments ERC20 token in response to
 *      market oracles.
 */
contract MasterOracle is Ownable {
    using SafeMath for uint256;
    using SafeMathInt for int256;
    using UInt256Lib for uint256;

    struct Transaction {
        bool enabled;
        address destination;
        bytes data;
    }

    event TransactionFailed(address indexed destination, uint index, bytes data);

    // Stable ordering is not guaranteed.
    Transaction[] public transactions;

    event LogRebase(
        uint256 indexed epoch,
        uint256 exchangeRate,
        int256 requestedSupplyAdjustment,
        uint256 timestampSec
    );

    event rebase1(uint112 r0, uint112 r1, uint32 t);

    event check(int256 number);

    IGain public gain;

    uint256 public deviationThreshold;

    uint256 public rebaseCooldown;

    uint256 public lastRebaseTimestampSec;

    uint256 public epoch;
    
    bool public rebaseLocked; 

    IUniswapV2Pair private _gain_usd;
    uint private usdcGainPrice0CumulativeLast;
    uint private usdcGainPrice1CumulativeLast;
    uint32 private gainUsdcBlockTimestampLast;

        uint256 private constant MAX_RATE = 10**6 * 10**18;
    // MAX_SUPPLY = MAX_INT256 / MAX_RATE
    uint256 private constant MAX_SUPPLY = ~(uint256(1) << 255) / MAX_RATE;

    constructor(address _gain, address __gain_usd) {
        rebaseCooldown = 500;
        lastRebaseTimestampSec = 0;
        epoch = 0;
        rebaseLocked = true;

        gain = IGain(_gain);
        _gain_usd = IUniswapV2Pair(__gain_usd);

        usdcGainPrice0CumulativeLast = _gain_usd.price0CumulativeLast();
        usdcGainPrice0CumulativeLast = _gain_usd.price1CumulativeLast();

        uint112 _dummy1;
        uint112 _dummy2;

        (_dummy1, _dummy2, gainUsdcBlockTimestampLast) = _gain_usd.getReserves();
    }
        
    function setRebaseLocked(bool _locked) external onlyOwner {
        rebaseLocked = _locked;
    }

    function canRebase() public view returns (bool) {
        return ((!rebaseLocked || isOwner()) && lastRebaseTimestampSec.add(rebaseCooldown) < block.timestamp);
    }
    
    function cooldownExpiryTimestamp() public view returns (uint256) {
        return lastRebaseTimestampSec.add(rebaseCooldown);
    }

    function rebase() external {

        require(canRebase(), "MasterOracle: You can not rebase");
        epoch = epoch + 1; 

        lastRebaseTimestampSec = block.timestamp;
        uint112 reserve0;
        uint112 reserve1;

        (reserve0, reserve1, gainUsdcBlockTimestampLast) = _gain_usd.getReserves();

        emit rebase1(reserve0, reserve1, gainUsdcBlockTimestampLast);

        int256 reservePercentage = int256(reserve1 - reserve0);
        emit check(reservePercentage);
        int256 percentage = (reservePercentage * 10000) / reserve1;
        emit check(percentage);
         
        int256 totalSupply = int256(gain.totalSupply());
        emit check(totalSupply);
        int256 data = percentage * totalSupply;
        emit check(data);
        int256 supplyDelta = data / 10000;
        emit check(supplyDelta);
        
        gain.rebase(epoch, supplyDelta);

        _gain_usd.sync();
        
    
    }


    function getRebaseValues() public view returns (uint256, uint256, int256) {

        uint256 targetRate = 10 ** 18;
        uint256 exchangeRate = getData();

        if (exchangeRate > MAX_RATE) {
            exchangeRate = MAX_RATE;
        }

        int256 supplyDelta = computeSupplyDelta(exchangeRate, targetRate);

        // Apply the dampening factor.
        if (supplyDelta < 0) {
            supplyDelta = supplyDelta.div(2);
        } else {
            supplyDelta = supplyDelta.div(5);                   
        }

        if (supplyDelta > 0 && gain.totalSupply().add(uint256(supplyDelta)) > MAX_SUPPLY) {
            supplyDelta = (MAX_SUPPLY.sub(gain.totalSupply())).toInt256Safe();
        }

        return (exchangeRate, targetRate, supplyDelta);
    }


    /**
     * @return Computes the total supply adjustment in response to the exchange rate
     *         and the targetRate.
    */

    function computeSupplyDelta(uint256 rate, uint256 targetRate)
        internal
        view
        returns (int256)
    {
        if (withinDeviationThreshold(rate, targetRate)) {
            return 0;
        }

        // supplyDelta = totalSupply * (rate - targetRate) / targetRate
        int256 targetRateSigned = targetRate.toInt256Safe();
        return gain.totalSupply().toInt256Safe()
            .mul(rate.toInt256Safe().sub(targetRateSigned))
            .div(targetRateSigned);
    }

    function withinDeviationThreshold(uint256 rate, uint256 targetRate)
        internal
        view
        returns (bool)
    {
        uint256 absoluteDeviationThreshold = targetRate.mul(deviationThreshold)
            .div(10 ** 18);

        return (rate >= targetRate && rate.sub(targetRate) < absoluteDeviationThreshold)
            || (rate < targetRate && targetRate.sub(rate) < absoluteDeviationThreshold);
    }

        function getData() public view returns (uint256) {

        uint _price0CumulativeLast;
        uint _price1CumulativeLast;
        uint32 _blockTimestampLast;

        uint gainUsdAverage;

        //(_price0CumulativeLast, _price1CumulativeLast, _blockTimestampLast, gainUsdAverage) = getGainUsdRate();

    
        uint answer = (gainUsdAverage * 1e18) / gainUsdAverage;

        return (answer);
    }
    
    
}

