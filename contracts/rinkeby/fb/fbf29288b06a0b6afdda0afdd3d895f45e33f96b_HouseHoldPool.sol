import "./AERC20Transfer.sol";
import "./HouseHoldConfigs.sol";
import "./library/ConfigsGetters.sol";
import "../interfaces/IHouseHoldPool.sol";
import "../interfaces/IHHPoolToken.sol";
import "../interfaces/IERC20.sol";

contract HouseHoldPool is UpgradeablePausable, IHouseHoldPool, AERC20Transfer {
  using ConfigsGetters for HouseHoldConfigs;
  using SignedSafeMathUpgradeable for uint256;
  using SafeMathUpgradeable for uint256;
  using MathUpgradeable for uint256;
  
  HouseHoldConfigs public hhConfig;
  mapping(uint256 => DepositRate[]) public depositRates;

  event DepositMade(address indexed origin, address to, uint256 indexed tokenId, uint256 amount, uint256 period, uint256 rate);
  event DrawdownMade(address indexed mortgage, uint256 indexed clientId, address indexed borrower, uint256 amount);
  event MortgageStartMade(address indexed mortgage, uint256 indexed clientId, uint256 amount, uint256 date);
  event RepaymentMade(address indexed mortgage, uint256 clientId, uint256 amount);
  event WithdrawAdminMade(address admin, uint256 amount);
  event MortgageUpdateStatus(address indexed mortgage, uint256 status);
  event WithdrawNFTMade(address indexed origin, uint256 indexed tokenId, uint256 amount);
  /// @custom:oz-upgrades-unsafe-allow constructor
  constructor() initializer {}

  function initialize(address config) public initializer {
    require(config != address(0), "Config addresses cannot be empty");

    __UpgradeablePausable__init();
    hhConfig = HouseHoldConfigs(config);
  }

  function deposit(uint256 amount, uint256 period)
    public
    payable
    override
    nonReentrant
    whenNotPaused
    returns (uint256 tokenId)
  {
    return _receiveDeposit(amount, period, true);
  }

  function _receiveDeposit(uint256 amount, uint256 period, bool transfer) internal returns (uint256) {
    require(amount > 0, "Must deposit > zero");
    uint256 rate = _getRate(period, amount);
    
    IHHPoolToken.TokenInfo memory params = IHHPoolToken.TokenInfo({
      owner: _msgSender(),
      amount: amount,
      period: period,
      rate: rate
    });
    if (transfer) {
      safeERC20TransferFrom(hhConfig.getUSDCContract(), _msgSender(), address(this), amount);
    }
    uint256 tokenId = hhConfig.getHHPoolToken().mintToken(params, _msgSender(), "");
    emit DepositMade(_msgSender(), address(this), tokenId, amount, period, rate);
    return tokenId;
  }

  function tokenWithdraw(uint256 tokenId, uint256 amount)
    public
    override
    nonReentrant
    whenNotPaused
  {
    _withdrawNft(tokenId, amount);
  }


  function tokenWithdrawMintNew(uint256 tokenId, uint256 amount, uint256 period)
    public
    override
    nonReentrant
    whenNotPaused
    returns (uint256)
  {
    
    uint256 amountdiff = hhConfig.getHHPoolToken().amountDiff(tokenId, amount);
    uint256 id = _receiveDeposit(amountdiff, period, false);
    _withdrawNft(tokenId, amount);
    return id;
  }

  function _withdrawNft(uint256 tokenId, uint256 amount) internal {
    bool check = hhConfig.getHHPoolToken().checkTokenPool(tokenId, _msgSender(), amount);
    require(check, "There is a problem with the NFT");

    IERC20 usdc = hhConfig.getUSDCContract();
    uint256 contractBalance = usdc.balanceOf(address(this));
    uint256 amountRemaining = contractBalance.sub(amount);
    require(amountRemaining >= 0, "The amount is grater than the pool");

    bool success = usdc.approve(address(this), amount);
    require(success, "Failed to approve USDC amount");
    
    safeERC20TransferFrom(usdc, address(this), _msgSender(), amount);
    hhConfig.getHHPoolToken().burnToken(tokenId);

    emit WithdrawNFTMade(_msgSender(), tokenId, amount);
  }

  function drawdown(uint256 amount, address mortgage) external override nonReentrant onlyAdmin whenNotPaused {
    IMortgage morgtgageInstance = IMortgage(mortgage);
    uint256 clientId = morgtgageInstance.getMortgageTerms().clientId;
    address borrower = morgtgageInstance.getMortgageTerms().borrower;
    require(hhConfig.getHouseHold().getMortgageStatus(clientId, mortgage), "The mortgage is not active");

    IERC20 usdc = hhConfig.getUSDCContract();
    uint256 contractBalance = usdc.balanceOf(address(this));
    uint256 amountRemaining = contractBalance.sub(amount);
    require(amountRemaining >= 0, "The amount is grater than the capital");

    bool success = usdc.approve(address(this), amount);
    require(success, "Failed to approve USDC amount");

    safeERC20TransferFrom(usdc, address(this), borrower, amount);

    uint256 newStatus = morgtgageInstance.onDrawdown(amount);
    emit DrawdownMade(mortgage, clientId, borrower, amount);
    emit MortgageUpdateStatus(mortgage, newStatus);
  }

  function configStartDate(uint256 clientId, uint256 date, address mortgage) external override onlyAdmin whenNotPaused {
    IMortgage morgtgageInstance = IMortgage(mortgage);
    uint256 client = morgtgageInstance.getMortgageTerms().clientId;
    require(client == clientId, "The client does not match the mortgage");
    require(hhConfig.getHouseHold().getMortgageStatus(client, mortgage), "The mortgage is not active");

    uint256 amount = morgtgageInstance.getMortgageTerms().amount;
    uint256 newStatus =  morgtgageInstance.onDrawdown(amount.mul(1000000));

    emit MortgageStartMade(mortgage, clientId, amount, date);
    emit MortgageUpdateStatus(mortgage, newStatus);
  }
 
  function repayment(uint256 amount, address mortgage)
    public
    payable
    override
    nonReentrant
    whenNotPaused
  {
    require(amount > 0, "Must deposit > zero");

    IMortgage morgtgageInstance = IMortgage(mortgage);
    uint256 clientId = morgtgageInstance.getMortgageTerms().clientId;
    require(hhConfig.getHouseHold().getMortgageStatus(clientId, mortgage), "The mortgage is not active");

    safeERC20TransferFrom(hhConfig.getUSDCContract(), _msgSender(), address(this), amount);
    uint256 principalPayment = _calcBalanceByPayment(
      amount,
      morgtgageInstance.getAccounting().balance,
      morgtgageInstance.getMortgageTerms().ear,
      12
    );
    
    morgtgageInstance.onRepayment(principalPayment);
    emit RepaymentMade(mortgage, clientId, amount);
  }

  function updateRates(uint256 period, DepositRate calldata rate) external onlyAdmin override {
    depositRates[period].push(rate);
  }
  function cleanRate(uint256 period) external onlyAdmin override {
    delete depositRates[period];
  }

  function _getRate(uint256 period, uint256 amount) internal view returns (uint256) {
    DepositRate[] memory rates = depositRates[period];
    require(rates.length > 0, "Rates are not defined");
    uint256 index = 0;
    uint256 minRateIndex = 0;
    for (uint256 i = 0; i < rates.length; i ++) {
      if (rates[i].amount < amount) {
        index = i + 1;
      }
      if (rates[minRateIndex].amount > rates[i].amount) {
        minRateIndex = i;
      }
    }
    if (index == 0) {
      index = minRateIndex;
    } else {
      index = index - 1;
    }
    return rates[index].rate;
  }

  function withdrawAdmin(uint256 amount) external override nonReentrant onlyAdmin whenNotPaused {
    IERC20 usdc = hhConfig.getUSDCContract();
    uint256 contractBalance = usdc.balanceOf(address(this));
    uint256 amountRemaining = contractBalance.sub(amount);
    require(amountRemaining >= 0, "The amount is grater than the pool");

    bool success = usdc.approve(address(this), amount);
    require(success, "Failed to approve USDC amount");

    address ownerAddress = hhConfig.getOwnerAdminAddress();
    safeERC20TransferFrom(usdc, address(this), ownerAddress, amount);
    emit WithdrawAdminMade(ownerAddress, amount);
  }

  function closeMortgage(address mortgage) external override onlyAdmin whenNotPaused {
    IMortgage morgtgageInstance = IMortgage(mortgage);
    uint256 newStatus =  morgtgageInstance.closeMortgage();
    emit MortgageUpdateStatus(mortgage, newStatus);

  }

  function completeMortgage(address mortgage) external override onlyAdmin whenNotPaused {
    IMortgage morgtgageInstance = IMortgage(mortgage);
    uint256 newStatus =  morgtgageInstance.completeMortgage();
    emit MortgageUpdateStatus(mortgage, newStatus);
  }

  function _calcBalanceByPayment(
    uint256 paymentAmount,
    uint256 balance,
    uint256 rate,
    uint256 ratePeriod
  ) public pure returns (uint256) {
    uint256 paymentRemaining = paymentAmount;
    uint256 interestPayment = balance.mul(rate.div(rate).div(ratePeriod));
    uint256 principalPayment = paymentRemaining.sub(interestPayment);
    
    return principalPayment.min(balance);
  }
}

