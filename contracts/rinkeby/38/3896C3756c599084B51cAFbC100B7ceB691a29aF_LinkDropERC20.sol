/**
    ACL Rules:
    Owner:
    - cannot claim
    - can pause campaign
    - can destroy campaign
    - can add new referer
    - can remove referer
    - can NOT do anything else

    Operator:
    - can call claim method
    - can not do anything else

    Referer:
    - can view the referer amount on his/her wallet only
    - can not do anything else

    Q & A

    1. How to prevent operator from claiming rewards by himself or How can owners trust Zerodrop not claim to address that doesn't fullfill the campaign
        - the contract will need owner's signature which is the hash of claimee's address + nounce
            - A nounce is used to prevent replay attack (signature can only be used once)
            - Every successful claim will be stored on chain to make sure it's truly public and visible, this also prevent replay attack because signature cannot be used multiple times
        - the signature is provided when owner's service call zerodrop's affiliate apis to let zerodrop invoke "claim"

    3. Can referer bypass off-chain flow and hack / claim the rewards on chain directly??
        - No, only the Operator is able to "claim"

    2. Can claimee bypass off-chain flow and hack / claim the rewards on chain directly??
        - No, only the Operator is able to "claim"

    3. How gas fees are paid when claiming
        - Owner will need to deposit some ETH in the contract
        - zerodrop will pay the gas fee first, contract will then send back the gas fee to operator's address
        - if the deposit balance is low, owner needs to add more ETH to the contract. ( This can be replaced with zerodrop token in the future)

*/

struct Referer {
    uint amount;
}

contract LinkDropERC20 is Ownable{

    using ECDSA for bytes32;
    using Counters for Counters.Counter;
    
    Counters.Counter public referersCounter;
    IERC20 public token;
    address public operator;
    bool public paused;
    uint public claimingAmount;

    mapping(address => Referer) public referersMapping;
    
    bytes[] signatures;

    constructor(address operatorAddress, address tokenAddress, uint claimingNumber, address[] memory referers, uint[] memory referersAmount) {
        // tokenAddres needs to be a valid ERC20 contract
        // validation is performed off chain
        require(isContractERC20(tokenAddress), "token address is not a valid ERC20 token");
        // referers needs to match [referer1, referer2, ...]
        // referrerd needs to match [amount1, amount2, ...]
        uint referersLength = referers.length;
        require(referersLength == referersAmount.length);
        for (uint i = 0; i < referersLength; i++  ) {
            referersMapping[referers[i]] = Referer({amount: referersAmount[i]});
            referersCounter.increment();
        }

        token = IERC20(tokenAddress);
        // operator is the only account that can invoke the claim method
        operator = operatorAddress;
        paused = false;
        claimingAmount = claimingNumber;
        
    }

    function addReferer (address refererAddress, uint refererAmount) onlyOwner public returns(uint) {
        referersMapping[refererAddress] = Referer({amount: refererAmount});
        referersCounter.increment();
        return referersCounter.current();
    }

    function removeReferer (address refererAddress) onlyOwner public returns(uint) {
        delete referersMapping[refererAddress];
        referersCounter.decrement();
        return referersCounter.current();
    }

    function claim(address refererAddress, address claimeeAddress, string calldata nounce, bytes calldata _signature) public returns(bool) {
        require(validateClaim(refererAddress, claimeeAddress, nounce, _signature), "fail to validate payload");
        // transfer claiming amount of token to claimee from owner's wallet
        token.transferFrom(owner(), claimeeAddress, claimingAmount);
        token.transferFrom(owner(), refererAddress, referersMapping[refererAddress].amount);
        signatures.push(_signature);
        return true;
    }

    // call this function before calling the claim to avoid transaction fee
    // validate claim payload
    function validateClaim(address refererAddress, address claimeeAddress, string calldata nounce, bytes calldata _signature) public view returns (bool) {
        require(!paused, "this contract is currently in pause");
        require(!arrayElementExists(signatures, _signature), "already claimed");
        // check referer is valid
        uint refererAmount = referersMapping[refererAddress].amount;
        require(refererAmount != 0, "referer is not listed");
        // check token avaiability
        require(
            token.balanceOf(owner()) >= claimingAmount + refererAmount,
            "Token balance is too low"
        );
        // check token allowance for operator
        require(
            token.allowance(owner(), operator) >= claimingAmount + refererAmount,
            "Token allowance is too low"
        );

        return checkClaimerSignature(owner(), refererAddress, claimeeAddress, nounce, _signature);
    }


    // only the owner can revoke this contract
    function revoke() public returns(bool) {
        // revoke this contract by assigning operator to buned address
        return true;
    }

    function pause() public onlyOwner returns(bool) {
        paused = true;
        return paused;
    }
    
    function unpause() public onlyOwner returns(bool) {
        paused = false;
        return paused;
    }

    function checkClaimerSignature(address ownerAdress, address referer, address claimee, string calldata nounce, bytes calldata _signature) private pure returns (bool) {
        // message should be in format of {owner} + {referer} + {claimee} + {nounce} and signed by claimer
        bytes32 messagehash = keccak256(
            abi.encodePacked(ownerAdress, referer, claimee, nounce)
        );

        return isSignatureValid(ownerAdress, _signature, messagehash);
    }

    function getMyReferer () public view returns (uint) {
        return referersMapping[msg.sender].amount;
    }
}

function isSignatureValid(address signerAddress, bytes calldata signature, bytes32 message) pure returns (bool) {
    address signer = ECDSA.recover(ECDSA.toEthSignedMessageHash(message), signature);

    return signer == signerAddress;
}

