pragma solidity ^0.8.2;

import "@openzeppelin/contracts/utils/structs/EnumerableMap.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import "./TrustedContacts.sol";
import "./RecoverableErc20ByOwner.sol";
import "./interfaces/IReferralTree.sol";

/// @custom:security-contact [email protected]
contract ReferralTree is
    IReferralTree,
    TrustedContacts,
    RecoverableErc20ByOwner
{
    using EnumerableSet for EnumerableSet.AddressSet;
    using EnumerableMap for EnumerableMap.UintToAddressMap;

    address private immutable _root;

    struct Account {
        uint256 id;
        address referrer;
        uint256 referralsCount;
        uint256 reward;
        uint256 createdAt;
    }
    mapping(address => Account) public accounts;
    EnumerableMap.UintToAddressMap private _idOwners;
    mapping(address => EnumerableSet.AddressSet) private _referrals;

    constructor(address root_) {
        _root = root_;
        uint256 rootId = treeSize();
        _idOwners.set(rootId, root_);

        Account storage userAccount = accounts[root_];
        userAccount.id = rootId;
        userAccount.createdAt = block.timestamp;
    }

    function join(uint256 refId) public returns (bool) {
        address referral = _msgSender();
        _setReferrerWithCheck(referral, refId);
        return true;
    }

    function joinFor(address referral, uint256 refId)
        public
        override
        onlyTrusted
        returns (bool)
    {
        require(
            referral != address(0),
            "ReferralTree: referral is zero address"
        );

        _setReferrerWithCheck(referral, refId);
        return true;
    }

    function rewardsRefill(
        address referrerOrCommunity,
        address referral,
        uint256 amount
    ) public override onlyTrusted {
        Account storage parentAccount = accounts[referrerOrCommunity];
        parentAccount.reward += amount;
        emit Rewarded(referrerOrCommunity, referral, amount);
    }

    function root() public view override returns (address) {
        return _root;
    }

    function treeSize() public view returns (uint256) {
        return _idOwners.length();
    }

    function hasReferrer(address referral) public view override returns (bool) {
        return accounts[referral].referrer != address(0);
    }

    function getReferrer(address referral)
        public
        view
        override
        returns (address)
    {
        return accounts[referral].referrer;
    }

    function getReferral(address account, uint256 index)
        public
        view
        returns (address)
    {
        return _referrals[account].at(index);
    }

    function getReferrals(
        address account,
        uint256 fromIntex,
        uint256 toIntex
    ) public view returns (address[] memory) {
        address[] memory list = new address[](toIntex - fromIntex);
        uint256 i;
        uint256 index = fromIntex;
        while (index < toIntex) {
            list[i] = _referrals[account].at(index);
            i++;
            index++;
        }
        return list;
    }

    function _setReferrerWithCheck(address referral, uint256 refId) internal {
        if (hasReferrer(referral)) return;
        address referrer = root();
        if (_existsId(refId)) {
            referrer = _idOwners.get(
                refId,
                "ReferralTree: owner query for nonexistent id"
            );
        }
        _setReferrer(referral, referrer);
    }

    function _setReferrer(address referral, address referrer) internal {
        Account storage userAccount = accounts[referral];
        userAccount.id = treeSize();
        _idOwners.set(userAccount.id, referral);
        userAccount.referrer = referrer;
        userAccount.createdAt = block.timestamp;

        Account storage parentAccount = accounts[referrer];
        _referrals[referrer].add(referral);
        parentAccount.referralsCount = _referrals[referrer].length();
        emit NewReferral(referrer, referral);
    }

    function _existsId(uint256 accountId) internal view returns (bool) {
        return _idOwners.contains(accountId);
    }
}

