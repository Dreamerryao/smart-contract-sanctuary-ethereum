/**
 * @title SPACE (Wrapped ALP).
 *
 * @dev A fixed-balance ERC-20 wrapper for the ALP rebasing token.
 *
 *      Users deposit ALP into this contract and are minted SPACE.
 *
 *      Each account's SPACE balance represents the fixed percentage ownership
 *      of ALP's market cap.
 *
 *      For exalpe: 100K SPACE => 1% of the ALP market cap
 *        when the ALP supply is 100M, 100K SPACE will be redeemable for 1M ALP
 *        when the ALP supply is 500M, 100K SPACE will be redeemable for 5M ALP
 *        and so on.
 *
 *      We call SPACE the "wrapper" token and ALP the "underlying" or "wrapped" token.
 */
contract SPACE is ERC20, ERC20Permit {
    using SafeERC20 for IERC20;

	mapping(address => uint256) private _allTokensAddresses;
	address[] private _allTokens;
    IERC1543 private immutable _alpFactory;

    /// @param alpAddress_ The ALP ERC20 token address.
    /// @param name_ The SPACE ERC20 name.
    /// @param symbol_ The SPACE ERC20 symbol.
    constructor(
        address alpAddress_,
        string memory name_,
        string memory symbol_
    ) ERC20(name_, symbol_) ERC20Permit(name_) {
        _alpFactory = IERC1543(alpAddress_);
    }

    /// @notice Transfers ALPs from {msg.sender} and mints SPACEs.
    ///
    /// @param alps The amount of ALPs to deposit.
    /// @param tokenId Unique identfier of ALP.
    /// @return The amount of SPACEs minted.
    function mint(uint256 alps, uint256 tokenId) external returns (uint256) {
        uint256 spaces = _enter(alps);
        _deposit(_msgSender(), _msgSender(), alps, spaces, tokenId);
        return spaces;
    }

    /// @notice Transfers ALPs from {msg.sender} and mints SPACEs,
    ///         to the specified beneficiary.
    ///
    /// @param to The beneficiary wallet.
    /// @param alps The amount of ALPs to deposit.
    /// @param tokenId Unique identfier of ALP.
    /// @return The amount of SPACEs minted.
    function mintFor(address to, uint256 alps, uint256 tokenId) external returns (uint256) {
        uint256 spaces = _enter(alps);
        _deposit(_msgSender(), to, alps, spaces, tokenId);
        return spaces;
    }

    /// @notice Burns SPACEs from {msg.sender} and transfers ALPs back.
    ///
    /// @param spaces The amount of SPACEs to burn.
    /// @param tokenId Unique identfier of ALP.
    /// @return The amount of burnt SPACEs.
    function burn(uint256 spaces, uint256 tokenId) external returns (uint256) {
        uint256 alps = _leave(spaces);
        _withdraw(_msgSender(), _msgSender(), alps, spaces, tokenId);
        return spaces;
    }

    /// @notice Burns SPACEs from {msg.sender} and transfers ALPs back,
    ///         to the specified beneficiary.
    ///
    /// @param to The beneficiary wallet.
    /// @param spaces The amount of SPACEs to burn.
    /// @param tokenId Unique identfier of ALP.
    /// @return The amount of burnt SPACEs.
    function burnTo(address to, uint256 spaces, uint256 tokenId) external returns (uint256) {
        uint256 alps = _leave(spaces);
        _withdraw(_msgSender(), to, alps, spaces, tokenId);
        return spaces;
    }

	function underlyingFactory() external view returns (address) {
		return address(_alpFactory);
	}

	function storedTokensLength() external view returns (uint256) {
		return _allTokens.length;
	}

	/// @return The address of the underlying "wrapped" token ie) ALP.
    function underlying(uint256 index) external view returns (address) {
		require(index < _allTokens.length, "SPACE: index out of bounds");
        return _allTokens[index];
    }

    /// @return The total ALPs held by this contract.
    function underlyingAmount(uint256 index) external view returns (uint256) {
		require(index < _allTokens.length, "SPACE: index out of bounds");
        return IERC20(_allTokens[index]).balanceOf(address(this));
    }

	function totalUnderlyingAmount() public view returns (uint256) {
		uint256 length = _allTokens.length;
		uint256 total = 0;
		for (uint256 i = 0; i < length; i++) {
			total += IERC20(_allTokens[i]).balanceOf(address(this));
		}
		return total;
	}

    /// @dev Internal helper function to handle deposit state change.
    /// @param from The initiator wallet.
    /// @param to The beneficiary wallet.
    /// @param alps The amount of ALPs to deposit.
    /// @param spaces The amount of SPACEs to mint.
    function _deposit(
        address from,
        address to,
        uint256 alps,
        uint256 spaces,
		uint256 tokenId
    ) private {
		address tokenAddress = _addTokenToArray(tokenId);
        IERC20(tokenAddress).safeTransferFrom(from, address(this), alps);
        _mint(to, spaces);
    }

    /// @dev Internal helper function to handle withdraw state change.
    /// @param from The initiator wallet.
    /// @param to The beneficiary wallet.
    /// @param alps The amount of ALPs to withdraw.
    /// @param spaces The amount of SPACEs to burn.
    function _withdraw(
        address from,
        address to,
        uint256 alps,
        uint256 spaces,
		uint256 tokenId
    ) private {
		address tokenAddress = _alpFactory.assetPair(tokenId).tokenAddress;
        IERC20(tokenAddress).safeTransfer(to, alps);
		
		_removeTokenFromArray(tokenId);
		_burn(from, spaces);
    }

    /// @dev Converts ALPs to SPACE amount.
    function _enter(uint256 alps) private view returns (uint256) {
		uint256 totalShares = totalSupply();
		uint256 alpBalance = totalUnderlyingAmount(); 
		if (totalShares == 0 || alpBalance == 0) {
			return alps * 10**9;
		} else {
			return (alps * totalShares) / alpBalance;
		}
    }

    /// @dev Converts SPACEs amount to ALPs.
    function _leave(uint256 spaces) private view returns (uint256) {
		return (spaces * totalUnderlyingAmount()) / totalSupply();
    }

	function _addTokenToArray(uint256 tokenId) private returns (address) {
		require(_alpFactory.assetPair(tokenId).checked, "SPACE: only for verified");
		address tokenAddress = _alpFactory.assetPair(tokenId).tokenAddress;
		uint256 balance = IERC20(tokenAddress).balanceOf(address(this));
		if (balance == 0) {
			_allTokensAddresses[tokenAddress] = _allTokens.length;
			_allTokens.push(tokenAddress);
		}

		return tokenAddress;
	}
	
	function _removeTokenFromArray(uint256 tokenId) private {
		address tokenAddress = _alpFactory.assetPair(tokenId).tokenAddress;
		uint256 balance = IERC20(tokenAddress).balanceOf(address(this));
		if (balance == 0) {
			uint256 lastTokenIndex = _allTokens.length - 1;
			uint256 tokenIndex = _allTokensAddresses[tokenAddress];

			address lastTokenAddress = _allTokens[lastTokenIndex];

			_allTokens[tokenIndex] = lastTokenAddress;
			_allTokensAddresses[lastTokenAddress] = tokenIndex;

			delete _allTokensAddresses[tokenAddress];
			_allTokens.pop();
		}
	}
}

