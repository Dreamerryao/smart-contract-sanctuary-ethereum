contract ForePrictionPool is Ownable {
    struct Pool {
        address owner; // pool owner
        string name; // pool name
        uint256 createdAt; // pool created timestamp
        uint256 numOfOptions;
        uint256 totalBettors; // The numbers of bettors
    }

    uint256 private _numOfPools = 0;
    mapping (uint256 => Pool) private _pools;
    mapping (uint256 => mapping(uint256 => string)) private _poolOptions; // mapping of poolID => (optionsID => optionText);
    mapping (uint256 => mapping(uint256 => uint256)) private _poolOptionAmount; // mapping of poolID => (optionsID =>amountOfOption);
    mapping (uint256 => mapping(uint256 => address)) private _poolBettors; // mapping of poolID => (userID => userAddress);
    mapping (uint256 => mapping(address => uint256)) private _poolBettorAmount; // mapping of poolID => (userAddress => betAmount);
    mapping (uint256 => mapping(address => uint256)) private _poolBettorOption; // mapping of poolID => (userAddress => selectedOptionId);

    // mapping (uint256 => mapping(address => uint256)) private _bets;

    event PoolCreated(address owner, uint256 poolId);

    function totalPools() public view returns(uint256) {
        return _numOfPools;
    }

    function getPool(uint256 pool_id) public view returns(
        uint256 id,
        address owner,
        string memory name,
        uint256 createdAt,
        string[] memory options,
        uint256[] memory optionAmounts
    ) {
        string memory pool_name = _pools[pool_id].name;
        uint256 num_of_opts = _pools[pool_id].numOfOptions;
        string[] memory opts;
        uint256[] memory opt_amounts;
        for (uint256 i=0; i<num_of_opts; i++) {
            uint256 opt_id = i + 1;
            opts[i] = _poolOptions[pool_id][opt_id];
            opt_amounts[i] = _poolOptionAmount[pool_id][opt_id];
        }
        return (pool_id, _pools[pool_id].owner, pool_name, _pools[pool_id].createdAt, opts, opt_amounts);
    }

    function createPool(
        string memory pool_name,
        uint256 num_of_opts,
        string[] memory pool_opts
    ) external {
        uint256 pool_id = _numOfPools + 1;
        _pools[pool_id] = Pool(msg.sender, pool_name, block.timestamp, num_of_opts, 0);
        for (uint256 i=0; i<num_of_opts; i++) {
            uint opt_id = i + 1;
            _poolOptions[pool_id][opt_id] = pool_opts[i];
            _poolOptionAmount[pool_id][opt_id] = 0;
        }
        _numOfPools = _numOfPools + 1;
        emit PoolCreated(msg.sender, pool_id);
    }

    function bet(
        uint256 pool_id,
        uint256 opt_id,
        uint256 bet_amount
    ) external {
        // Pool storage pool = _pools[pool_id];
        uint256 bettor_id = _pools[pool_id].totalBettors + 1;
        address bettor_addr = msg.sender;
        require(_poolBettorOption[pool_id][bettor_addr] == 0, "already_bet");
        _poolOptionAmount[pool_id][opt_id] = _poolOptionAmount[pool_id][opt_id] + bet_amount;
        _poolBettors[pool_id][bettor_id] = bettor_addr;
        _poolBettorAmount[pool_id][bettor_addr] = bet_amount;
        _poolBettorOption[pool_id][bettor_addr] = opt_id;
    }
}