pragma solidity ^0.8.0;

import "@openzeppelin/contracts-upgradeable/utils/cryptography/draft-EIP712Upgradeable.sol";
import "@openzeppelin/contracts/utils/cryptography/SignatureChecker.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "./utils/UUPSUpgradeableByRole.sol";
import "./interfaces/IReentalDIDFactory.sol";
import "./interfaces/IReentalDIDController.sol";

contract ReentalWhitelist is UUPSUpgradeableByRole, EIP712Upgradeable {

  struct UserInfo {
    bool whitelisted;
    uint256 retentionPercent;
  }

  bool public disabled;

  mapping(address => UserInfo) private _users;

  // // solhint-disable-next-line var-name-mixedcase
  //   bytes32 private immutable _REENTAL_WHITELIST_TYPEHASH =
  //       keccak256("Add(address controller,address owner,address master,uint256 deadline,uint256 retention)");

  event Added(address account, uint256 retentionPercent);
  event Removed(address account);
  event RetentionUpdated(address account, uint256 retentionPercent);
  event ToggleDisabled(bool state);

  function initialize () public initializer {
      __AccessControlProxyPausable_init(msg.sender);
      __EIP712_init("REENTAL_WHITELIST", "1");
  }

  function add(address account, uint256 retention) public whenNotPaused onlyRole(DEFAULT_ADMIN_ROLE) {
    _add(account, retention);
  }

  function addDID(
    bytes calldata initializeCalldata, 
    uint256 retention
  ) 
    public 
    whenNotPaused 
    onlyRole(DEFAULT_ADMIN_ROLE) 
    returns(address proxy) 
  {
    address controller;
    (controller,,) = abi.decode(initializeCalldata[4:], (address, address, address));
    proxy = _createProxy(initializeCalldata, controller);
    _add(proxy, retention);
  }

  // TBD: consider using an specific role and not default-admin
  function addDIDWithSignature(
    bytes calldata initializeCalldata, 
    uint256 retention, 
    uint deadline,
    address signer,
    bytes memory signature
  ) 
    public 
    whenNotPaused 
    returns(address proxy) 
  {
    require(block.timestamp <= deadline, "ReentalWhitelist: expired deadline");
    require(hasRole(DEFAULT_ADMIN_ROLE, signer), "ReentalWhitelist: wrong signer role");

    (address controller,address owner,address master) = abi.decode(initializeCalldata[4:], (address, address, address));
    bytes32 structHash = keccak256(abi.encode(keccak256("Add(address controller,address owner,address master,uint256 deadline,uint256 retention)"), controller, owner, master, deadline, retention));
    bytes32 hash = _hashTypedDataV4(structHash);
    bool validation = SignatureChecker.isValidSignatureNow(signer, hash, signature);
    require(validation, "ReentalWhitelist: invalid signature");
    
    proxy = _createProxy(initializeCalldata, controller);
    _add(proxy, retention);
  }

  function remove(address account) public whenNotPaused onlyRole(DEFAULT_ADMIN_ROLE){
      require(_whitelisted(account), "ReentalWhitelist: account not whitelisted");
      _users[account] = UserInfo(false, 0);
      emit Removed(account);
  }
  function toggleDisabled() public onlyRole(DEFAULT_ADMIN_ROLE){
    disabled = !disabled;
    emit ToggleDisabled(disabled);
  }
  function whitelisted(address account) public view returns(bool) {
    return disabled ? true : _whitelisted(account);
  }
  function retentionPercent(address account) public view returns(uint256){
    return _users[account].retentionPercent;
  }
  function _whitelisted(address account) internal view returns(bool){
    return _users[account].whitelisted;
  }
  function updateRetention(address account, uint256 retention) public whenNotPaused onlyRole(DEFAULT_ADMIN_ROLE) {
    require(_whitelisted(account), "ReentalWhitelist: account not whitelisted");
      _users[account] = UserInfo(true, retention);
      emit RetentionUpdated(account, retention);
  }

  function extractTokens(address token) public onlyRole(DEFAULT_ADMIN_ROLE) {
      IERC20 tokenInterface = IERC20(token);
      uint256 balance = tokenInterface.balanceOf(address(this));
      require(tokenInterface.transfer(_msgSender(), balance), "ReentalWhitelist: extraction failed");
  }

  function extractETH() public onlyRole(DEFAULT_ADMIN_ROLE) {
      require(payable(_msgSender()).send(address(this).balance), "ReentalWhitelist: funds transfer failed");
  }

  function _add(address account, uint256 retention) internal {
    require(!_whitelisted(account), "ReentalWhitelist: account already whitelisted");
    _users[account] = UserInfo(true, retention);
    emit Added(account, retention);
  }

  function _createProxy(bytes calldata initializeCalldata, address controller) internal returns(address proxy) {
    IReentalDIDFactory factoryDID = IReentalDIDFactory(IReentalDIDController(controller).getAddress(keccak256("REENTAL_DID_FACTORY")));
    proxy = factoryDID.createProxy(initializeCalldata);
  }
}

