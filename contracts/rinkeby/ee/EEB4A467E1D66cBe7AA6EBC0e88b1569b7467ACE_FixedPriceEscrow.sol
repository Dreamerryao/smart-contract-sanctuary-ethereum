pragma solidity ^0.8.4;

import "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC721/IERC721Upgradeable.sol";

contract FixedPriceEscrow is ReentrancyGuardUpgradeable {
    uint256 public listingId = 1;

    mapping(uint256 => Listing) public listings;

    struct Listing {
        address nftContract;
        uint256 tokenId;
        address payable seller;
        uint256 endTime;
        uint256 price;
        bool active;
    }

    function createListing(
        address _nftContract,
        uint256 _tokenId,
        uint256 _endTime,
        uint256 _price
    ) external nonReentrant {
        require(IERC721Upgradeable(_nftContract).ownerOf(_tokenId) == address(this), "you need to send the token");

        listings[listingId] = Listing(_nftContract, _tokenId, payable(msg.sender), _endTime, _price, true);

        emit ListingCreated(listingId);

        listingId++;
    }

    function cancelListing(uint256 _listingId) external nonReentrant {
        require(_listingId <= listingId, "Non existent listing");
        require(payable(msg.sender) == listings[_listingId].seller, "You dont own this listing");

        IERC721Upgradeable(listings[_listingId].nftContract).transferFrom(
            address(this),
            msg.sender,
            listings[_listingId].tokenId
        );

        listings[_listingId].active = false;

        emit ListingCanceled(_listingId);
    }

    function purchaseListing(uint256 _listingId) external payable nonReentrant {
        require(_listingId <= listingId, "Non existent listing");
        require(listings[_listingId].active, "Listing does not exist or is no longer active");
        require(msg.value == listings[_listingId].price, "Price is invalid");
        require(
            listings[_listingId].endTime < block.timestamp || listings[_listingId].endTime == 0,
            "Listing is expired"
        );
        require(msg.sender != listings[_listingId].seller, "You can't buy your own listing");

        IERC721Upgradeable(listings[_listingId].nftContract).transferFrom(
            address(this),
            msg.sender,
            listings[_listingId].tokenId
        );

        emit ListingPurchased(_listingId);
    }

    event ListingCreated(uint256 _listingId);
    event ListingCanceled(uint256 _listingId);
    event ListingPurchased(uint256 _listingId);
}

