pragma solidity ^0.8.0;

import '@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol';
import '@openzeppelin/contracts-upgradeable/utils/CountersUpgradeable.sol';
import '@openzeppelin/contracts-upgradeable/utils/math/SafeMathUpgradeable.sol';
import '@openzeppelin/contracts/token/ERC20/IERC20.sol';
import './interfaces/IItemV2.sol';

contract ItemV2 is AccessControlUpgradeable, IItemV2 {
    using SafeMathUpgradeable for uint256;
    using CountersUpgradeable for CountersUpgradeable.Counter;

    IERC20 public paymentToken;

    //******************** Deprecated ***********************//
    mapping(uint256 => uint256) private lootboxPrices;
    //*******************************************************//

    bytes32 public constant ITEM_PRICE_SETTER_ROLE = keccak256('ITEM_PRICE_SETTER_ROLE');

    address public treasury;

    mapping(uint256 => Item) public idToItem;

    CountersUpgradeable.Counter private currentItemId;
    CountersUpgradeable.Counter private removedItemCount;

    function initializeItemV2(address _treasury) public onlyRole(DEFAULT_ADMIN_ROLE) {
        _setTreasury(_treasury);
        _setRoleAdmin(ITEM_PRICE_SETTER_ROLE, DEFAULT_ADMIN_ROLE);
    }

    function setPaymentToken(address _paymentToken) public override onlyRole(DEFAULT_ADMIN_ROLE) {
        require(_paymentToken != address(0), 'Invalid payment token');
        paymentToken = IERC20(_paymentToken);
        emit PaymentTokenChanged(_paymentToken);
    }

    function setTreasury(address _treasury) public override onlyRole(DEFAULT_ADMIN_ROLE) {
        _setTreasury(_treasury);
    }

    function buyItem(
        address _to,
        uint256 _itemId,
        uint256 _count
    ) public override {
        uint256 itemPrice = idToItem[_itemId].price;
        address sender = _msgSender();

        require(_itemId < currentItemId.current(), 'Invalid item ID');
        require(idToItem[_itemId].active == true, 'The item already removed');
        require(_count >= 1, 'Item count must be at least 1');

        uint256 price = itemPrice.mul(_count);

        require(paymentToken.balanceOf(sender) >= price, 'Insufficient funds');
        require(
            paymentToken.allowance(sender, address(this)) >= price,
            'Item contract is not authorized to use token on sender behalf'
        );

        paymentToken.transferFrom(sender, address(this), price);
        paymentToken.transfer(treasury, price);

        emit ItemPurchased(_itemId, _msgSender(), _to, _count, itemPrice);
    }

    function addItem(string memory _name, uint256 _price) public override onlyRole(DEFAULT_ADMIN_ROLE) {
        require(_price > 0, 'The price must be greater than zero');

        uint256 itemId = currentItemId.current();
        currentItemId.increment();

        idToItem[itemId] = Item(itemId, _price, _name, true);

        emit ItemAdded(itemId, _name, _price);
    }

    function removeItem(uint256 _itemId) public override onlyRole(DEFAULT_ADMIN_ROLE) {
        require(_itemId < currentItemId.current(), 'Invalid item ID');
        require(idToItem[_itemId].active == true, 'The item already removed');

        idToItem[_itemId].active = false;
        removedItemCount.increment();

        emit ItemRemoved(_itemId);
    }

    function updateItemPrice(uint256 _itemId, uint256 _price) public override onlyRole(ITEM_PRICE_SETTER_ROLE) {
        require(_itemId < currentItemId.current(), 'Invalid item ID');
        require(idToItem[_itemId].active == true, 'The item already removed');
        require(_price > 0, 'The price must be greater than zero');

        idToItem[_itemId].price = _price;

        emit ItemPriceUpdated(_itemId, _price);
    }

    function updateItemsPrices(uint256[] calldata _itemIds, uint256[] calldata _prices)
        public
        override
        onlyRole(ITEM_PRICE_SETTER_ROLE)
    {
        require(_itemIds.length > 0, 'Item IDs can not be empty');
        require(_itemIds.length == _prices.length, 'Item IDs and prices must be the same size');

        for (uint256 i = 0; i < _itemIds.length; i++) {
            updateItemPrice(_itemIds[i], _prices[i]);
        }
    }

    function updateItemName(uint256 _itemId, string memory _name) public override onlyRole(DEFAULT_ADMIN_ROLE) {
        require(_itemId < currentItemId.current(), 'Invalid item ID');

        idToItem[_itemId].name = _name;

        emit ItemNameUpdated(_itemId, _name);
    }

    function getItems() public view override returns (Item[] memory) {
        uint256 itemCount = currentItemId.current();
        uint256 unremovedItemCount = itemCount - removedItemCount.current();
        uint256 currentIndex = 0;

        Item[] memory items = new Item[](unremovedItemCount);
        for (uint256 i = 0; i < itemCount; i++) {
            if (idToItem[i].active == true) {
                items[currentIndex] = idToItem[i];
                currentIndex += 1;
            }
        }
        return items;
    }

    function _setTreasury(address _treasury) private {
        require(_treasury != address(0), 'Invalid treasury');
        treasury = _treasury;
        emit TreasuryChanged(_treasury);
    }
}

