// File: FundMe.sol

contract FundMe {
    using SafeMathChainlink for uint256;

    mapping(address => uint256) public addressToAmountFunded;
    address[] public funders; //we create this array because to reset our funders balnces, we can't go through lall the keys of a mapping so we do it with an array
    address public owner;

    AggregatorV3Interface public priceFeed;

    constructor(address _priceFeed) public {
        priceFeed = AggregatorV3Interface(_priceFeed);
        owner = msg.sender;
    }

    function fund() public payable {
        uint256 minimumUSD = 50 * 10**18; //we multiply by 10** 18 because the eth amount is in wei
        require(
            getConversionRate(msg.value) > minimumUSD,
            "You need to spend more ETH !"
        );
        //this line says that if they didn't send us enough money, then we're gonna stop exectuing we're gonna do what's called a "revert", this means that the user is gonna get there mooney back as well as any unspend gas
        //C+=A => C=C+A. So here somebody can send some value because it is a payable funcion and we're gonna save everything to this addressToAmountFunded map.
        addressToAmountFunded[msg.sender] += msg.value; //we wriite this because at first ddressToAmountFunded[msg.sender] will be = 0 so we will add the msg.value to it. But the reason we don't say "addressToAmountFunded[msg.sender] = msg.value is because if the same address sends some fund into this contract, we want to add it to their balance, so if they sent 10eth, the first time, the function will be 0+10; but if they send 2Eth the second time, we don't want their balance to be 2, we want it to be 12. So that is why we do this "+=" which will -- for the 2nd transaction-- do 10+2 = 12 because addressToAmountFunde[msg.sender] will already be equal to 10
        funders.push(msg.sender);
    }

    function getVersion() public view returns (uint256) {
        return priceFeed.version();
    }

    function getPrice() public view returns (uint256) {
        (, int256 answer, , , ) = priceFeed.latestRoundData();

        return uint256(answer * 10000000000);
        //We multiple "answer" by 10**10 because we want the price to be in wei
    }

    function getConversionRate(uint256 ethAmount)
        public
        view
        returns (uint256)
    {
        uint256 ethPrice = getPrice();
        uint256 ethAmountInUsd = (ethPrice * ethAmount) / 1000000000000000000;
        //we divide by 10**18 because the "ethPrice" we are getting is in eth and the ethAmount that we are entering in the function is i wei
        return ethAmountInUsd;
    }

    function getEntranceFee() public view returns (uint256) {
        //minimum USD to be able to enter the contract/community/...
        uint256 minimumUSD = 50 * 10**18;
        uint256 price = getPrice();
        uint256 precision = 1 * 10**18;
        return (minimumUSD * precision) / price;
    }

    modifier onlyOwner() {
        require(msg.sender == owner);
        _;
    }

    function withdraw() public payable onlyOwner {
        msg.sender.transfer(address(this).balance);

        for (
            uint256 funderIndex = 0;
            funderIndex < funders.length;
            funderIndex++
        ) {
            address funder = funders[funderIndex];
            addressToAmountFunded[funder] = 0; // we change the value associated with the address of the funder to 0
        }
        funders = new address[](0); // here we reset the array of funders
    }
}