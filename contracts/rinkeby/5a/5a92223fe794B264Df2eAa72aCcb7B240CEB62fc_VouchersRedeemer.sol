contract VouchersRedeemer is ERC1155TokenReceiver, Ownable, Pausable {
    using SafeMath for uint256;

    event VoucherRedeemedSingle(address _from, uint256 _id, uint256 _value, uint256 _gameeAmount);
    event VoucherRedeemedBatch(address _from, uint256[] _ids, uint256[] _values, uint256 _gameeAmount);

