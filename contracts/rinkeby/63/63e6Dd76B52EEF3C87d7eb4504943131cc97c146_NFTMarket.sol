contract NFTMarket is ReentrancyGuard {
    struct MarketItem {
        address payable seller;
        uint256 price;
    }

    mapping(uint256 => MarketItem) private hashToMarketItem;

    function getHash(address nftContract, uint256 tokenId) internal pure returns (uint256) {
        return uint256(keccak256(abi.encodePacked(nftContract, tokenId)));
    }

    function getMarketItem(address nftContract, uint256 tokenId) public view returns (address seller, uint256 price) {
        uint256 hash = getHash(nftContract, tokenId);
        MarketItem memory item = hashToMarketItem[hash];
        return (item.seller, item.price);
    }

    event MarketItemCreated (
        address indexed nftContract,
        uint256 indexed tokenId,
        address seller,
        uint256 price
    );

    event MarketItemSold (
        address indexed nftContract,
        uint256 indexed tokenId,
        address seller,
        uint256 price,
        address buyer
    );

    event MarketItemCancelled (
        address indexed nftContract,
        uint256 indexed tokenId
    );

    /* Places an item for sale on the marketplace */
    function createMarketItem(
        address nftContract,
        uint256 tokenId,
        uint256 price
    ) public nonReentrant {
        require(price > 0, "Price must be at least 1 wei");

        address owner = IERC721(nftContract).ownerOf(tokenId);
        require(msg.sender == owner, "Caller must be item owner");

        uint256 hash = getHash(nftContract, tokenId);

        hashToMarketItem[hash] = MarketItem(
            payable(msg.sender),
            price
        );

        emit MarketItemCreated(
            nftContract,
            tokenId,
            msg.sender,
            price
        );
    }

    /* Creates the sale of a marketplace item */
    function createMarketSale(
        address nftContract,
        uint256 tokenId
    ) public payable nonReentrant {
        uint256 hash = getHash(nftContract, tokenId);
        MarketItem memory item = hashToMarketItem[hash];
        require(msg.value > 0, "Price must be at least 1 wei");
        require(msg.value == item.price, "Please submit the asking price in order to complete the purchase");

        item.seller.transfer(msg.value);
        IERC721(nftContract).transferFrom(item.seller, msg.sender, tokenId);
        delete hashToMarketItem[hash];

        emit MarketItemSold(
            nftContract,
            tokenId,
            item.seller,
            item.price,
            msg.sender
        );
    }

    /* Cancels the sale of an item */
    function cancelMarketItem(
        address nftContract,
        uint256 tokenId
    ) public nonReentrant {
        address owner = IERC721(nftContract).ownerOf(tokenId);
        require(msg.sender == owner, "Caller must be item owner");

        uint256 hash = getHash(nftContract, tokenId);
        delete hashToMarketItem[hash];

        emit MarketItemCancelled(
            nftContract,
            tokenId
        );
    }
}