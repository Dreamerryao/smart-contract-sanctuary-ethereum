import "@openzeppelin/contracts/token/ERC721/IERC721.sol";

interface ICreditSystem {
    function getCreditLine(address user) external returns(uint);
    function getState(address user) external returns(bool, bool);
}

/**
* DepositTool status is use bytes to save tool status
* bytes[0] detect tool is borrow or not
* bytes[1] detect tool is repay or not
* bytes[2] detect tool is liquidate or not
* example:
* 0x010000 means tool is borrowed
* 0x010100 means tool is repay
*/

struct DepositTool {
    uint cycle;
    uint minPay;
    bytes3 status;
    uint[] toolIds;
    address holder;
    uint borrowTime;
    uint depositTime;
    uint totalAmount;
    address borrower;
    uint amountPerDay;
    uint internalId;
}

struct FreezeTokenInfo {
    address operator;
    uint internalId;
    bool useCredit;
    address game;
    uint amount;
    uint interest;
}

struct InterestInfo {
    uint internalId;
    address game;
    uint amount;
}