/*
 @title NFTReseller sells tickets on behalf of NFTServiceProvider
 @author bloXmove.harry
 @notice the NFTicket reseller client contract
 @dev resells energy_requests for NFTCert as service provider
*/

contract NFTReseller is Ownable, INFTReseller, NFTicketReseller, EIP712 {
    using StringLib for string;
    using SafeMath for uint256;
    using EnumerableSet for EnumerableSet.AddressSet;

    event ticketPaid(
        uint256 ticketID,
        uint256 serviceType,
        uint256 serviceFee,
        uint256 resellerFee,
        uint256 transactionFee
    );
    event ticketIssued(uint ticketID, Ticket _t, uint256 value);

    EnumerableSet.AddressSet private _whitelistSet;

    address public serviceProvider;
    string constant serviceProviderName = "NFTeQuota";
    address public immutable ERC20Token;
    address public verifierAccount;

    mapping(uint256 => TicketInfo) public TicketRecords;

    // Keep track of allocated energy for a ticket
    mapping(uint256 => ConsumedRecord[]) private _allocations;

    constructor(
        address _erc20Token,
        address _nfticket,
        address _nftService,
        string memory eip712domain,
        string memory eip712version
    ) EIP712(eip712domain, eip712version) NFTicketReseller(_nfticket) {
        ERC20Token = _erc20Token;

        serviceProvider = _nftService;

        // price per "credit" unit in "base token" (TODO -> ERC20 -> BLXM)

        // whitelist the creator of the smart contract
        _whitelistSet.add(msg.sender);
    }

    // Owner only value setup
    function setupVerifierAccount(address _verifierAccount) public onlyOwner {
        verifierAccount = _verifierAccount;
    }

    function issueNFTicketUnsigned(Payload calldata payload)
        public
        payable
        override
    //   returns(uint256, uint256, uint256)
    {
         string memory _msg;
        _msg = "issueNFTicketUnsigned: Customer ";

        _msg = string(abi.encodePacked(_msg, abi.encodePacked(Strings.toString(uint256(uint160(msg.sender)))) ," allowance "));
        string memory allowance = Strings.toString(IERC20(ERC20Token).allowance(msg.sender, address(this)));
        _msg = string(abi.encodePacked(_msg, allowance, " is insuffient for price="));
        allowance = Strings.toString(payload.price);
        _msg = string(abi.encodePacked(_msg,allowance));
        // check customer allowance equal or more than the price in payload
        require(
            IERC20(ERC20Token).allowance(msg.sender, address(this)) >= payload.price,
            _msg
        );

        // check customer ERC20 balance is equal or more than the price in payload
        require(
            IERC20(ERC20Token).balanceOf(msg.sender) >= payload.price,
            "issueNFTicketUnsigned: Customer token balance is insufficient."
        );

        // TODO
        TransferHelper.safeTransferFrom(
            ERC20Token,
            msg.sender,
            nfticket,
            payload.price
        );

        /*
        Payload: [
            { name: 'recipient', type: 'address' },
            { name: 'tokenURI', type: 'string' },
            { name: 'schema', type: 'DataSchema' },
            { name: 'data', type: 'string[]' },
            { name: 'uuid', type: 'string' },
            { name: 'serializedTicket', type: 'string[]'},
            { name: 'certValue', type: 'uint256'},
            { name: 'credits', type: 'uint256' },
            { name: 'pricePerCredit', type: 'uint256'},
            { name: 'price', type: 'uint256' },
            { name: 'timestamp', type: 'uint256' },
          ],
          struct Ticket {
                uint256 tokenID;
                address serviceProvider; // the index to the map where we keep info about serviceProviders
                uint32  serviceDescriptor;
                address issuedTo;
                uint256 certValue;
                uint256 credits;
                uint256 pricePerCredit;
                uint256 serviceFee;
                uint256 resellerFee;
                uint256 transactionFee;
            }
        */
        Ticket memory _t = deserializeTicket(payload.serializedTicket);
        _t.serviceProvider = serviceProvider;
        _t.issuedTo = payload.recipient;
        buyNFTicketParams memory params = buyNFTicketParams({
            reseller: address(this),
            serviceProvider: serviceProvider, // address(uint160(payload.serializedTicket[1].stringToUint())),
            issuer: msg.sender,
            certValue: _t.certValue, // payload.serializedTicket[4].stringToUint(),
            credits: payload.credits,
            pricePerCredit: payload.pricePerCredit,
            price: payload.price,
            recipient: payload.recipient,
            tokenURI: payload.tokenURI
        });
        uint256 _ticketID = buyNFTicket(_t, params, msg.value);

        emit ticketIssued(_ticketID, _t, payload.price);
        //        return(_ticketID, consumedCredits, remainCredits);
    }
    
    function issueNFTicket(Payload calldata payload, bytes calldata signature)
        external
        payable
        override
    //   returns(uint256, uint256, uint256)
    {
        // payloadVerification(payload, signature, _msgSender())
        issueNFTicketUnsigned(payload);

    }

    // ticket owner ask for ticket fee refund
    function refundTicketFee(uint256 tokenId) external {
        // only token owner can refund ticket fee
        address tokenIdOwner = IERC721(nfticket).ownerOf(tokenId);
        require(msg.sender == tokenIdOwner);
        require(TicketRecords[tokenId].ticketUsed == false);
        INFTicket(nfticket).refundTicketFeeToTicketOwner(
            tokenId,
            TicketRecords[tokenId].ticketFee
        );
        TicketRecords[tokenId].ticketUsed = true;
    }

    function payloadVerification(
        Payload calldata payload,
        bytes calldata signature,
        address callerAddress
    ) internal view {
        // check signature signer is reseller address
        address signer = verifyPayload(payload, signature);
        require(signer == verifierAccount, "Signature signer is not verifier.");

        string memory _msg;
        _msg = "Customer ";

        _msg = string(abi.encodePacked(_msg, abi.encodePacked(Strings.toString(uint256(uint160(callerAddress)))) ," allowance "));
        string memory allowance = Strings.toString(IERC20(ERC20Token).allowance(callerAddress, address(this)));
        _msg = string(abi.encodePacked(_msg, allowance, " is insuffient for price="));
        allowance = Strings.toString(payload.price);
        _msg = string(abi.encodePacked(_msg,allowance));
        // check customer allowance equal or more than the price in payload
        require(
            IERC20(ERC20Token).allowance(callerAddress, address(this)) >= payload.price,
            _msg
        );

        // check customer ERC20 balance is equal or more than the price in payload
        require(
            IERC20(ERC20Token).balanceOf(callerAddress) >= payload.price,
            "payloadVerification: Customer token balance is insufficient."
        );

        // check timestamp is within 1 hr
        require(
            block.timestamp - 3600 <= payload.timestamp,
            "Payload timestamp is not within one hour."
        );
    }

    function verifyPayload(Payload calldata payload, bytes calldata signature)
        internal
        view
        returns (address signer)
    {
        bytes memory schemaKeys;
        bytes memory schemaKeyTypes;
        bytes memory schemaEncoded;
        bytes memory dataEncoded;
        bytes memory serializedTicketEncoded;
        uint i;

        for (i = 0; i < payload.schema.size ; i++) {
            schemaKeys = abi.encodePacked(
                schemaKeys,
                keccak256(bytes(payload.schema.keys[i]))
            );
            schemaKeyTypes = abi.encodePacked(
                schemaKeyTypes,
                payload.schema.keyTypes[i]
            );
        }
        schemaEncoded = abi.encodePacked(
            keccak256(
                abi.encode(
                    keccak256(
                    "DataSchema(string name,uint32 size,string[] keys, uint8 keyTypes)"
                ),
                keccak256(bytes(payload.schema.name)),
                payload.schema.size,
                schemaKeys,
                schemaKeyTypes
                )
            )
        );

        for(i = 0; i < payload.data.length / payload.schema.size; i++) {
            for (uint j = 0; j < payload.schema.size ; j++ )
                dataEncoded = abi.encodePacked(
                    dataEncoded,
                    keccak256(bytes(payload.data[i*j + j]))
                );
        }

        for (i = 0; i < payload.serializedTicket.length ; i++) {
            serializedTicketEncoded = abi.encodePacked(
                serializedTicketEncoded,
                keccak256(bytes(payload.serializedTicket[i]))
            );
        }

        /*
        const value = {
          recipient: recipientAddress,
          tokenURI: tokenURI,
          schema:
          {
            name: "THGquota",
            size: 6,
            keys: ["VIN", "Holder", "Class", "RegistrationDate", "earliestBuyBackDate", "value"],
            keyTypes: [3, 3, 3, 3, 3, 2]
          },
          data: [
            "7SAXCBE69NF332271", chash1, "M1", rdate1.toUTCString(), ddate1.toUTCString(), String(v1)
          ],
          serializedTicket: [
            zero, stringSPA, stringSD, stringRA, stringCV, stringCr, stringPPC, sFee, rFee, zero
          ],
          certValue: certValue,
          uuid: "75442486-0878-440c-9db1-a7006c25a39f",
          credits: "10",
          pricePerCredit: ethers.utils.parseUnits("30", decimals),
          price: price,
          timestamp: currentTimestamp
        };
        */
        bytes32 digest = _hashTypedDataV4(
            keccak256(
                abi.encode(
                    keccak256(
                        "Payload(address recipient,string tokenURI,DataSchema schema, string[] data , string[] serializedTicket, uint256 certValue, string uuid, uint256 credits,uint256 pricePerCredit, uint256 price,uint256 timestamp)DataSchema(string name,uint32 size,string[] keys,uint8[] keyTypes)"
                    ),
                    payload.recipient,
                    keccak256(bytes(payload.tokenURI)),
                    schemaEncoded,
                    dataEncoded,
                    serializedTicketEncoded,
                    payload.certValue,
                    keccak256(bytes(payload.uuid)),
                    payload.credits,
                    payload.pricePerCredit,
                    payload.price,
                    payload.timestamp
                )
            )
        );

        signer = ECDSA.recover(digest, signature);
    }

    function registerAsReseller(address _serviceProvider, address wallet)
        public
        returns (uint16 status)
    {
        require(inWhitelist(msg.sender), "only whitelisted wallet can register me as reseller");
        status = INFTicket(nfticket).registerResellerServiceProvider(
            address(this),
            _serviceProvider,
            wallet
        );
        return (status);
    }

   

    function viewAllocations(uint256 ticketId)
        public
        view
        returns (ConsumedRecord[] memory)
    {
        return _allocations[ticketId];
    }

    function addWhitelist(address _address) public override onlyOwner {
        _whitelistSet.add(_address);
    }

    function removeWhitelist(address _address) public override onlyOwner {
        _whitelistSet.remove(_address);
    }

    function inWhitelist(address _address)
        public
        view
        override
        returns (bool)
    {
        return _whitelistSet.contains(_address);
    }

}

