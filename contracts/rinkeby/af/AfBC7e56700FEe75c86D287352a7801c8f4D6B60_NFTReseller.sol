/*****************************************
 *
 * @title NFTicketReseller
 * @author bloXmove silverlynx
 * @notice Abstract class for resellers using the NFTicket protocol
 * @param _nfticket: address of the Master Smart Contract for the NFTicket protocol
 *
 *******************************************/

abstract contract NFTicketReseller is Ownable {
    address public immutable nfticket;
    using SafeMath for uint;
    using EnumerableSet for EnumerableSet.AddressSet;
    using StringLib for string;


    EnumerableSet.AddressSet private _whitelistSet;

    event TicketBought(
        uint256 value,
        uint256 feeRatio,
        uint256 indexed newTicketId,
        Ticket _t,
        address buyer,
        address recipient
    );

    constructor(address _nfticket) {
        nfticket = _nfticket;
    }

    /***************************
     *
     * @author bloXmove silverlynx
     * @notice this function issues an NFT, metadata is set and service-specific payload is passed
     * @dev this function needs to call NFTicket.mintNFTicket() in the end
     * @param address recipient - wallet to receive the minted NFT
     * @param string @tokenURI - the Metadata URI
     * @param DataRecords payload - service-specific payload serialized into DataRecords scructure
     *
     ****************************/
    function issueNFTicket(Payload calldata payload, bytes calldata signature)
        external
        payable
        virtual
    {}

    function issueNFTicketUnsigned(Payload calldata payload)
        public
        payable
        virtual
    {}

    /************
    *
    * @notice part of generic serialization framework between web2 and web3
    * @dev Ticket data gets passed in as an array of (currently/220918) 10 strings
    * @param string[] _ticket
    * @return Ticket structured data
    *
    ************/
    function deserializeTicket(string[] memory _ticket) 
        public
        returns(Ticket memory _t)
    {
            /*
            struct Ticket {
                uint256 tokenID;
                address serviceProvider; // the index to the map where we keep info about serviceProviders
                uint32  serviceDescriptor;
                address issuedTo;
                uint256 certValue;
                uint    certValidFrom; // value can be redeemedn after this time
                uint256 credits;
                uint256 pricePerCredit;
                uint256 serviceFee;
                uint256 resellerFee;
                uint256 transactionFee;
            }
            */
        _t.tokenID = _ticket[0].stringToUint();
        _t.serviceProvider = address(uint160(_ticket[1].stringToUint()));
        _t.serviceDescriptor = uint32(_ticket[2].stringToUint());
        _t.issuedTo = address(uint160(_ticket[3].stringToUint()));
        _t.certValue = _ticket[4].stringToUint();
        _t.certValidFrom = _ticket[5].stringToUint(); // UNIX timestamp
        _t.credits = _ticket[6].stringToUint();
        _t.pricePerCredit = _ticket[7].stringToUint();
        _t.serviceFee = _ticket[8].stringToUint();
        _t.resellerFee = _ticket[9].stringToUint();
        _t.transactionFee = 0;        
    }

     function buyNFTicket(Ticket memory _t, buyNFTicketParams memory params, uint256 layer1Token)
        public
        payable
        returns (uint256 newTicketID)
    {
        uint256 transactionFee;
        uint256 feeRatioInPerThousand;

        (newTicketID, transactionFee, feeRatioInPerThousand) = INFTicket(nfticket).mintNFTicket{value: layer1Token}(_t, params);

        _t.transactionFee = transactionFee; // it's NFTicket who sets the transactionFee
        uint256 resellerTransaction = transactionFee.div(1000).mul(
            feeRatioInPerThousand
        );
        uint256 serviceTransaction = transactionFee.sub(resellerTransaction);
        _t.resellerFee -= resellerTransaction;
        _t.serviceFee -= serviceTransaction;

        emit TicketBought(
            msg.value,
            feeRatioInPerThousand,
            newTicketID,
            _t,
            msg.sender,
            params.recipient
        );
        return(newTicketID);

    }
}

