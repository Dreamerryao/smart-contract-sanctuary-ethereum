pragma solidity ^0.8.9;

import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import "@openzeppelin/contracts/proxy/transparent/TransparentUpgradeableProxy.sol";
import "./interfaces/IPoolFactory.sol";
import "./interfaces/IPoolRegister.sol";
import "./interfaces/IPool.sol";
import "./management/Managed.sol";
import "./management/Constants.sol";

contract PoolRegister is IPoolFactory, IPoolRegister, Managed {
    using EnumerableSet for EnumerableSet.AddressSet;

    address public idoPoolImplementation;
    address public privatePoolImplemetation;
    address public proxyOwner;
    address public managedOwner;
    mapping(address => bool) public privates;

    EnumerableSet.AddressSet internal _pools;

    constructor(
        address _management,
        address _idoPoolImplementation,
        address _privatePoolImplemetation
    ) Managed(_management) {
        idoPoolImplementation = _idoPoolImplementation;
        privatePoolImplemetation = _privatePoolImplemetation;
        _setDependency();
    }

    function isRegistered(address _address)
        external
        view
        override
        returns (bool)
    {
        return _pools.contains(_address);
    }

    function list(uint256 _offset, uint256 _limit)
        external
        view
        override
        returns (address[] memory result)
    {
        uint256 to = _offset + _limit;
        if (to > _pools.length()) {
            to = _pools.length();
        }

        result = new address[](to - _offset);

        for (uint256 i = _offset; i < to; i++) {
            result[i - _offset] = _pools.at(i);
        }
    }

    function setDependency()
        external
        override
        requirePermission(GENERAL_CAN_UPDATE_DEPENDENCY)
    {
        _setDependency();
    }

    function setIDOPoolImplementation(address _idoPoolImplementation)
        external
        requirePermission(ROLE_ADMIN)
    {
        require(
            _idoPoolImplementation != address(0),
            ERROR_WRONG_IMPLEMENT_ADDRESS
        );
        idoPoolImplementation = _idoPoolImplementation;
    }

    function setPrivatePoolImplementation(address _privatePoolImplementation)
        external
        requirePermission(ROLE_ADMIN)
    {
        require(
            _privatePoolImplementation != address(0),
            ERROR_WRONG_IMPLEMENT_ADDRESS
        );
        privatePoolImplemetation = _privatePoolImplementation;
    }

    function createIDOPool(
        string memory _name,
        bool _isKyc,
        address _depositToken,
        address _ownerRecipient,
        uint256 _totalRaise,
        uint256 _feePercentage
    ) external override requirePermission(ROLE_ADMIN) returns (address proxy) {
        bytes memory bytesData = abi.encodeWithSignature(
            "initialize(address,string,bool,address,address,uint256,uint256)",
            address(management),
            _name,
            _isKyc,
            _depositToken,
            _ownerRecipient,
            _totalRaise,
            _feePercentage
        );
        proxy = address(
            new TransparentUpgradeableProxy(
                idoPoolImplementation,
                proxyOwner,
                bytesData
            )
        );
        Ownable(proxy).transferOwnership(managedOwner);
        _add(proxy, false);
    }

    function createPrivatePool(
        string memory _name,
        bool _isKyc,
        address _depositToken,
        address _ownerRecipient,
        uint256 _totalRaise,
        uint256 _feePercentage
    ) external override requirePermission(ROLE_ADMIN) returns (address proxy) {
        bytes memory bytesData = abi.encodeWithSignature(
            "initialize(address,string,bool,address,address,uint256,uint256)",
            address(management),
            _name,
            _isKyc,
            _depositToken,
            _ownerRecipient,
            _totalRaise,
            _feePercentage
        );
        proxy = address(
            new TransparentUpgradeableProxy(
                privatePoolImplemetation,
                proxyOwner,
                bytesData
            )
        );
        Ownable(proxy).transferOwnership(managedOwner);
        _add(proxy, true);
    }

    function add(address _pool, bool _isPrivate)
        external
        override
        requirePermission(REGISTER_CAN_ADD_POOL)
    {
        _add(_pool, _isPrivate);
    }

    function remove(address _pool)
        external
        override
        requirePermission(REGISTER_CAN_REMOVE_POOL)
    {
        require(_pools.remove(_pool), ERROR_NOT_FOUND);
        delete privates[_pool];
        emit RemovePool(_msgSender(), _pool);
    }

    function _setDependency() internal {
        proxyOwner = management.contractRegistry(ADDRESS_PROXY_OWNER);
        managedOwner = management.contractRegistry(ADDRESS_MANAGED_OWNER);
    }

    function _add(address _pool, bool _isPrivate) internal virtual {
        require(_pools.add(_pool), ERROR_IS_EXISTS);
        privates[_pool] = _isPrivate;
        management.setPoolOwner(_pool, _msgSender(), true);
        emit AddPool(_msgSender(), _pool, _isPrivate);
    }
}

