abstract contract Ownable is Context {
    address private _owner;

    event OwnershipTransferred(address indexed previousOwner, address indexed newOwner);


    constructor() {
        _transferOwnership(_msgSender());
    }

    function owner() public view virtual returns (address) {
        return _owner;
    }


    modifier onlyOwner() {
        require(owner() == _msgSender(), "Ownable: caller is not the owner");
        _;
    }

    function renounceOwnership() public virtual onlyOwner {
        _transferOwnership(address(0));
    }

   
    function transferOwnership(address newOwner) public virtual onlyOwner {
        require(newOwner != address(0), "Ownable: new owner is the zero address");
        _transferOwnership(newOwner);
    }

 
    function _transferOwnership(address newOwner) internal virtual {
        address oldOwner = _owner;
        _owner = newOwner;
        emit OwnershipTransferred(oldOwner, newOwner);
    }
}




contract RIT is  Ownable {

  using SafeMath for uint256;
    //發行總數量：3888
    uint256 internal TOKEN_LIMIT = 3888;
    //不重复随机指数
//    uint256[] public indices = new uint256[](maxSupply) ;

    uint256[] public indices = new uint256[](TOKEN_LIMIT) ;
    uint256 public indicesNonce;


   function LoopRandom(uint256 _count )public{

       for (uint256 i = 0; i < _count; i++) {
      randomIndex();
    }
   }



    function randomIndex() public returns (uint) {
        uint totalSize = TOKEN_LIMIT - indicesNonce;
        uint index = uint(keccak256(abi.encodePacked(indicesNonce,blockhash(block.number - 1), msg.sender, block.difficulty, block.timestamp))) % totalSize;
        uint value = 0;
        if (indices[index] != 0) {
            value = indices[index];
        } else {
            value = index;
        }

        // Move last value to selected position
        if (indices[totalSize - 1] == 0) {
            // Array position not initialized, so use position
            indices[index] = totalSize - 1;
        } else {
            // Array position holds a value so use that
            indices[index] = indices[totalSize - 1];
        }
        indicesNonce++;
        // Don't allow a zero index, start counting at 1
        return value.add(1);
    }


