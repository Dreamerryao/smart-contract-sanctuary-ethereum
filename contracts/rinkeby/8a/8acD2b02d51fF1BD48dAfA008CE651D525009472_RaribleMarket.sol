library RaribleMarket {
    address public constant RARIBLE_EXCHANGE =
        0x4ea115B448fb56f8e112104B0c2eb5884204d0CE;

    bytes4 private constant INTERFACE_ID_ERC721 = 0x80ac58cd;
    bytes4 private constant INTERFACE_ID_ERC1155 = 0xd9b67a26;

    function purchase(
        RaribleOrderTypes.Order memory orderLeft,
        bytes memory signatureLeft,
        RaribleOrderTypes.Order memory orderRight,
        bytes memory signatureRight,
        uint256 price,
        address to
    ) external {
        bytes memory _data = abi.encodeWithSelector(
            IRarible.matchOrders.selector,
            orderLeft,
            signatureLeft,
            orderRight,
            signatureRight
        );

        (bool success, ) = RARIBLE_EXCHANGE.call{value: price}(_data);
        if (!success) {
            // Copy revert reason from call
            assembly {
                returndatacopy(0, 0, returndatasize())
                revert(0, returndatasize())
            }
        } else {
            if (
                orderLeft.takeAsset.assetType.assetClass ==
                bytes4(keccak256("ERC721"))
            ) {
                (address addr, uint256 tokenId) = abi.decode(
                    orderLeft.takeAsset.assetType.data,
                    (address, uint256)
                );
                IERC721(addr).transferFrom(address(this), to, tokenId);
            } else if (
                orderLeft.takeAsset.assetType.assetClass ==
                bytes4(keccak256("ERC1155"))
            ) {
                (address addr, uint256 tokenId) = abi.decode(
                    orderLeft.takeAsset.assetType.data,
                    (address, uint256)
                );
                IERC1155(addr).safeTransferFrom(
                    address(this),
                    to,
                    tokenId,
                    orderLeft.takeAsset.value,
                    ""
                );
            }
        }
    }

    function onERC721Received(
        address operator,
        address from,
        uint256 tokenId,
        bytes calldata data
    ) external pure returns (bytes4) {
        return IERC721Receiver.onERC721Received.selector;
    }

    function onERC1155Received(
        address,
        address,
        uint256,
        uint256,
        bytes memory
    ) external pure returns (bytes4) {
        return IERC1155Receiver.onERC1155Received.selector;
    }
}

