pragma solidity 0.6.12;
pragma experimental ABIEncoderV2;

import "@openzeppelin/contracts-upgradeable/proxy/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721Receiver.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155Receiver.sol";
import "@openzeppelin/contracts/math/Math.sol";
import "@openzeppelin/contracts/math/SafeMath.sol";

import "./libs/NFTTransferHelper.sol";
import "./TokenStand.sol";

contract NFTJackpot is Initializable, AccessControlUpgradeable, IERC721Receiver, IERC1155Receiver {
    using SafeMath for uint256;

    /* ========== STATE VARIABLES ========== */
    uint256 private constant SECONDS_PER_DAY = 60 * 60 * 24; /* 86400 seconds in a day */
    uint256 public constant BASE_DENOMINATOR = 10000;

    /**
     * @dev Mapping of interface ids to whether or not it's supported.
     */
    mapping(bytes4 => bool) private _supportedInterfaces;

    struct CampaignInfo {
        address rewardDistributor; // Address of campaign reward distributor
        uint256 totalReward; // Total STAND reward of campaign
        uint256 duration; // Duration of campaign
        uint256 timestampFinish; // Timestamp of campaign end
        uint256 rewardRate; // Rate of STAND reward, equals totalReward / duration
        uint256 rewardPerUserStored; // STAND per user staking in campaign
        uint256 lastUpdateTime; // Last update campaign
    }

    // Collector Info in Campaign.
    struct CollectorInfo {
        uint256 amount; // Amount of batch collection deposited into campaign
        uint256 rewardAmount; // Total STAND reward of collector
        uint256 collectorRewardPerUserPaid;
        uint256 lastClaimedTimestamp;
    }

    // Campaign reward amount after finished.
    struct VestingInfo {
        uint256 totalReward;
        uint256 claimedAmount;
    }

    // The STAND TOKEN!
    TokenStand public STAND_CONTRACT;

    // Info of each campaign
    CampaignInfo[] public campaignInfo;
    // Total Campaign supply
    mapping(uint256 => uint256) public totalCampaignSupply;
    // All collection in campaign;
    mapping(uint256 => address[]) public campaignCollections;
    // Info of user that join campaign. campaignId + userAddress => true/false
    mapping(uint256 => mapping(address => CollectorInfo)) public collectorInfo;
    // Get campaign id that token was deposited into. collection + tokenId => campaignId
    mapping(address => mapping(uint256 => uint256)) public getCampaignForToken;
    // Get account that deposited token. collection + tokenId => owner
    mapping(address => mapping(uint256 => address)) public getOwnerForERC721;
    // Get Token ERC1155 balance of an user. campaignId + userAddress + collection + tokenId => amount
    mapping(uint256 => mapping(address => mapping(address => mapping(uint256 => uint256)))) public getERC1155Balances;
    // Return `true` if collection is ERC1155 in a given campaign. campaingId + collection => isERC1155
    mapping(uint256 => mapping(address => bool)) public isERC1155Collection;

    // Claimable percent each cliff.
    uint256 public claimablePercent;
    // Vesting cliff duration.
    uint256 public cliffDuration;
    // Vesting info. account + campaignId => vestingInfo.
    mapping(address => mapping(uint256 => VestingInfo)) public vestingInfo;

    /* ========== CONSTRUCTOR ========== */
    function initialize (
        TokenStand _stand
    ) public initializer {
        __AccessControl_init_unchained();
        // set admin role
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);

        STAND_CONTRACT = _stand;
        claimablePercent = 500; // 5% per week
        cliffDuration = SECONDS_PER_DAY.mul(7);

        // ERC721
        _supportedInterfaces[0x80ac58cd] = true;
        // ERC721 METADATA
        _supportedInterfaces[0x5b5e139f] = true;
        // ERC721 ENUMRABLE
        _supportedInterfaces[0x780e9d63] = true;

        // ERC1155
        _supportedInterfaces[0xd9b67a26] = true;
        // ERC1155 METADATA URI
        _supportedInterfaces[0x0e89341c] = true;

        campaignInfo.push(
            CampaignInfo({
                rewardDistributor: address(0),
                totalReward: 0,
                duration: 0,
                timestampFinish: 0,
                rewardRate: 0,
                rewardPerUserStored: 0,
                lastUpdateTime: 0
            })
        );
    }

    /* ========== EVENTS ========== */
    event LogCampaignAddition(
        uint256 indexed campaignId,
        address rewardDistributor,
        uint256 totalReward,
        uint256 startTime,
        uint256 duration
    );
    event LogCampaignCollectionAdded(
        uint256 indexed campaignId,
        address collection,
        uint256 collectionIndex,
        bool isERC1155
    );
    event LogCampaignRewardAdded(
        uint256 indexed campaignId,
        uint256 amount
    );
    event DepositedAndLockedNFT(
        address indexed user,
        uint256 indexed campaignId,
        address indexed collection,
        uint256 tokenId,
        uint256 lockAmount
    );
    event WithdrawnAndUnlockedNFT(
        address indexed user,
        uint256 indexed campaignId,
        address indexed collection,
        uint256 tokenId,
        uint256 unlockAmount
    );
    event ClaimedCampaignReward(
        address indexed user,
        uint256 indexed campaignId,
        uint256 indexed reward
    );
    event VestingInfoAdded(
        uint256 indexed campaignId,
        address indexed user,
        uint256 totalReward,
        uint256 claimedAmount,
        uint256 lastClaimedTimestamp
    );
    event SetPercent(uint256 percent);
    event SetCliffDuration(uint256 cliffDuration);

    /* ========== MODIFIERS ========== */
    modifier restricted() {
        _restricted();
        _;
    }

    function _restricted() internal view {
        require(hasRole(DEFAULT_ADMIN_ROLE, msg.sender), "not admin");
    }

    modifier onlyRewardsDistributor(uint256 campaignId) {
        require(msg.sender == campaignInfo[campaignId].rewardDistributor, "NFT Jackpot: not rewards distributor");
        _;
    }

    /* ========== VIEWS ========== */
    // Returns the number of campaigns.
    function campaignLength() external view returns (uint256) {
        return campaignInfo.length;
    }

    /// @notice Return the last timestamp the campaign was updated
    function lastTimeRewardApplicable(uint256 campaignId)
        public
        view
        returns (uint256)
    {
        uint256 startTimestamp = campaignInfo[campaignId].timestampFinish.sub(campaignInfo[campaignId].duration);
        if (block.timestamp < startTimestamp) {
            return startTimestamp;
        } else {
            return Math.min(block.timestamp, campaignInfo[campaignId].timestampFinish);
        }
    }

    /// @notice Return rewardPerUser for campaign. Else return 0
    function rewardPerUser(uint256 campaignId) public view returns (uint256) {
        CampaignInfo storage campaign = campaignInfo[campaignId];

        if (totalCampaignSupply[campaignId] == 0) {
            return campaign.rewardPerUserStored;
        }

        return
            campaign.rewardPerUserStored.add(
                lastTimeRewardApplicable(campaignId)
                    .sub(campaign.lastUpdateTime)
                    .mul(campaign.rewardRate)
                    .mul(1e18)
                    .div(totalCampaignSupply[campaignId])
            );
    }

    /// @notice Return STANDs are collected in a given campaign.
    function getCampaignEarned(uint256 campaignId, address account)
        public
        view
        returns (uint256)
    {
        CollectorInfo storage collector = collectorInfo[campaignId][account];

        return collector.amount
            .mul(rewardPerUser(campaignId).sub(collector.collectorRewardPerUserPaid))
            .div(1e18)
            .add(collector.rewardAmount);
    }

    /* ========== MUTATIVE FUNCTIONS ========== */
    // Deposit NFT to NFT Jackpot
    function depositNFT(
        uint256 campaignId,
        uint256[] calldata collectionIndexes,
        uint256[][] calldata tokenIds,
        uint256[][] calldata lockAmounts
    ) external {
        updateCampaign(campaignId, msg.sender);
        require(collectionIndexes.length > 0, "NFT Jackpot: invalid params length");
        require(collectionIndexes.length == tokenIds.length, "NFT Jackpot: invalid params length");
        require(collectionIndexes.length == lockAmounts.length, "NFT Jackpot: invalid params length");

        uint256 totalLockAmount = 0;

        for (uint256 i = 0; i < collectionIndexes.length; i++) {
            uint256 collectionLockAmount;
            address campaignCollection = campaignCollections[campaignId][collectionIndexes[i]];
            require(campaignCollection != address(0), "NFT Jackpot: invalid collection");
            for (uint256 j = 0; j < tokenIds[i].length; j++) {
                collectionLockAmount = _depositAndLockNFT(
                    campaignId,
                    campaignCollection,
                    msg.sender,
                    tokenIds[i][j],
                    lockAmounts[i][j]
                );
            }

            if (i == 0) {
                totalLockAmount = collectionLockAmount;
            } else {
                require(totalLockAmount == collectionLockAmount, "NFT Jackpot: invalid lock amount");
            }

            _nftTransfer(campaignId, campaignCollection, msg.sender, address(this), tokenIds[i], lockAmounts[i]);
        }

        if (totalLockAmount > 0) {
            CollectorInfo storage collector = collectorInfo[campaignId][msg.sender];
            totalCampaignSupply[campaignId] = totalCampaignSupply[campaignId].add(totalLockAmount);
            collector.amount = collector.amount.add(totalLockAmount);
        }
    }

    // Withdraw NFT from NFT Jackpot
    function withdrawNFT(
        uint256 campaignId,
        uint256[] calldata collectionIndexes,
        uint256[][] calldata tokenIds,
        uint256[][] calldata unlockAmounts
    ) external {
        updateCampaign(campaignId, msg.sender);
        CampaignInfo storage campaign = campaignInfo[campaignId];
        require(collectionIndexes.length == tokenIds.length, "NFT Jackpot: invalid params length");
        require(collectionIndexes.length == unlockAmounts.length, "NFT Jackpot: invalid params length");

        uint256 totalUnlockAmount = 0;

        for (uint256 i = 0; i < collectionIndexes.length; i++) {
            uint256 collectionUnlockAmount;
            address campaignCollection = campaignCollections[campaignId][collectionIndexes[i]];
            require(campaignCollection != address(0), "NFT Jackpot: invalid collection");
            for (uint256 j = 0; j < tokenIds[i].length; j++) {
                collectionUnlockAmount = _unlockAndWithdrawNFT(
                    campaignId,
                    campaignCollection,
                    msg.sender,
                    tokenIds[i][j],
                    unlockAmounts[i][j],
                    campaign.rewardRate,
                    campaign.timestampFinish,
                    campaign.duration
                );
            }

            if (i == 0) {
                totalUnlockAmount = collectionUnlockAmount;
            } else {
                require(totalUnlockAmount == collectionUnlockAmount, "NFT Jackpot: invalid unlock amount");
            }

            _nftTransfer(campaignId, campaignCollection, address(this), msg.sender, tokenIds[i], unlockAmounts[i]);
        }

        if (totalUnlockAmount > 0) {
            CollectorInfo storage collector = collectorInfo[campaignId][msg.sender];
            totalCampaignSupply[campaignId] = totalCampaignSupply[campaignId].sub(totalUnlockAmount);
            collector.amount = collector.amount.sub(totalUnlockAmount);
        }
    }

    function _depositAndLockNFT(
        uint256 campaignId,
        address campaignCollection,
        address beneficiary,
        uint256 tokenId,
        uint256 lockAmount
    ) internal returns (uint256 collectionLockAmount) {
        if (!isERC1155Collection[campaignId][campaignCollection]) {
            require(getCampaignForToken[campaignCollection][tokenId] == 0, "NFT Jackpot: invalid token");
            require(getOwnerForERC721[campaignCollection][tokenId] == address(0), "NFT Jackpot: not token owner");

            getCampaignForToken[campaignCollection][tokenId] = campaignId;
            getOwnerForERC721[campaignCollection][tokenId] = beneficiary;
        } else {
            getERC1155Balances[campaignId][beneficiary][campaignCollection][tokenId] =
                getERC1155Balances[campaignId][beneficiary][campaignCollection][tokenId].add(lockAmount);
        }

        collectionLockAmount = collectionLockAmount.add(lockAmount);
        emit DepositedAndLockedNFT(beneficiary, campaignId, campaignCollection, tokenId, lockAmount);
    }

    function _unlockAndWithdrawNFT(
        uint256 campaignId,
        address campaignCollection,
        address beneficiary,
        uint256 tokenId,
        uint256 unlockAmount,
        uint256 campaignRewardRate,
        uint256 campaignTimestampFinish,
        uint256 campaignDuration
    ) internal returns (uint256 collectionUnlockAmount) {
        if (!isERC1155Collection[campaignId][campaignCollection]) {
            require(getCampaignForToken[campaignCollection][tokenId] == campaignId, "NFT Jackpot: invalid token");
            require(getOwnerForERC721[campaignCollection][tokenId] == beneficiary, "NFT Jackpot: not token owner");

            require(campaignRewardRate == 0 || block.timestamp >= campaignTimestampFinish || block.timestamp < campaignTimestampFinish.sub(campaignDuration), "NFT Jackpot: end?");
            require(unlockAmount == 1, "NFT Jackpot: invalid unlock amount");

            getCampaignForToken[campaignCollection][tokenId] = 0;
            getOwnerForERC721[campaignCollection][tokenId] = address(0);
        } else {
            require(getERC1155Balances[campaignId][beneficiary][campaignCollection][tokenId] >= unlockAmount, "NFT Jackpot: invalid withdraw/unlock amount");

            require(campaignRewardRate == 0 || block.timestamp >= campaignTimestampFinish || block.timestamp < campaignTimestampFinish.sub(campaignDuration), "NFT Jackpot: end?");

            getERC1155Balances[campaignId][beneficiary][campaignCollection][tokenId] =
                getERC1155Balances[campaignId][beneficiary][campaignCollection][tokenId].sub(unlockAmount);
        }

        collectionUnlockAmount = collectionUnlockAmount.add(unlockAmount);
        emit WithdrawnAndUnlockedNFT(beneficiary, campaignId, campaignCollection, tokenId, unlockAmount);
    }

    function _nftTransfer(
        uint256 campaignId,
        address collection,
        address from,
        address to,
        uint256[] calldata tokenIds,
        uint256[] calldata amounts
        ) internal {
            NFTTransferHelper.safeBatchTransferFrom(
                collection,
                isERC1155Collection[campaignId][collection],
                from,
                to,
                tokenIds,
                amounts
            );
    }

    // Claim Campaign STAND after campaign is ended
    function claimCampaignSTAND(uint256 campaignId) external {
        CampaignInfo storage campaign = campaignInfo[campaignId];
        CollectorInfo storage collector = collectorInfo[campaignId][msg.sender];

        require(block.timestamp >= campaign.timestampFinish.sub(campaign.duration), "NFT Jackpot: start?");
        require(block.timestamp >= collector.lastClaimedTimestamp.add(cliffDuration), "NFT Jackpot: too soon");

        updateCampaign(campaignId, msg.sender);

        uint256 claimAmount = 0;

        if (block.timestamp >= campaign.timestampFinish) {
            VestingInfo storage user = vestingInfo[msg.sender][campaignId];

            if (user.totalReward == 0) {
                user.totalReward = collector.rewardAmount;
                user.claimedAmount = collector.rewardAmount.mul(claimablePercent).div(BASE_DENOMINATOR);
                claimAmount = user.claimedAmount;
                collector.lastClaimedTimestamp = block.timestamp;

                emit VestingInfoAdded(campaignId, msg.sender, user.totalReward, user.claimedAmount, block.timestamp);
            } else {
                uint256 unclaimedAmount = user.totalReward.sub(user.claimedAmount);
                claimAmount = user.totalReward.mul(claimablePercent).div(BASE_DENOMINATOR);

                if (claimAmount > unclaimedAmount) {
                    claimAmount = unclaimedAmount;
                }

                user.claimedAmount = user.claimedAmount.add(claimAmount);
                collector.lastClaimedTimestamp = block.timestamp;
            }
        } else {
            uint256 totalReward = collector.rewardAmount;
            claimAmount = totalReward.mul(claimablePercent).div(BASE_DENOMINATOR);

            if (claimAmount > 0) {
                collector.rewardAmount = totalReward.sub(claimAmount);
                collector.lastClaimedTimestamp = block.timestamp;
            }
        }

        STAND_CONTRACT.transfer(msg.sender, claimAmount);
        emit ClaimedCampaignReward(msg.sender, campaignId, claimAmount);
    }

    /* ========== RESTRICTED FUNCTIONS ========== */
    /// @notice Update Claimable Percent variables.
    function setClaimablePercent(uint256 _percent) external restricted {
        claimablePercent = _percent;
        emit SetPercent(_percent);
    }

    /// @notice Update Cliff Duration variables.
    function setCliffDuration(uint256 _cliffDuration) external restricted {
        cliffDuration = _cliffDuration;
        emit SetCliffDuration(_cliffDuration);
    }

    /// @notice Add a new Campaign. Can only be called by the owner.
    function addCampaign(
        address[] calldata _collections,
        bool[] calldata _isERC1155,
        address _rewardDistributor,
        uint256 _totalReward,
        uint256 _startTime,
        uint256 _duration
    ) external restricted {
        require (_collections.length >= 1, "NFT Jackpot: invalid collections");
        require (_collections.length == _isERC1155.length, "NFT Jackpot: invalid params length");
        campaignInfo.push(
            CampaignInfo({
                rewardDistributor: _rewardDistributor,
                totalReward: _totalReward,
                duration: _duration,
                timestampFinish: _startTime.add(_duration),
                rewardRate: 0,
                rewardPerUserStored: 0,
                lastUpdateTime: 0
            })
        );

        campaignCollections[campaignInfo.length.sub(1)] = _collections;

        for(uint256 i = 0; i < _collections.length; i++) {
            isERC1155Collection[campaignInfo.length.sub(1)][_collections[i]] = _isERC1155[i];
            emit LogCampaignCollectionAdded(campaignInfo.length.sub(1), _collections[i], i, _isERC1155[i]);
        }

        emit LogCampaignAddition(
            campaignInfo.length.sub(1),
            _rewardDistributor,
            _totalReward,
            _startTime,
            _duration
        );
    }

    /// @notice Update STAND reward variables of the given campaign.
    /// @param campaignId The index of the campaign. See `campaignInfo`.
    /// @param account The address is updating campaign info.
    function updateCampaign(uint256 campaignId, address account) internal {
        CampaignInfo storage campaign = campaignInfo[campaignId];

        uint256 newRewardPerUser = rewardPerUser(campaignId);
        campaign.rewardPerUserStored = newRewardPerUser;
        campaign.lastUpdateTime = lastTimeRewardApplicable(campaignId);

        if (account != address(0)) {
            CollectorInfo storage collector = collectorInfo[campaignId][msg.sender];

            collector.rewardAmount = getCampaignEarned(campaignId, account);
            collector.collectorRewardPerUserPaid = newRewardPerUser;
        }
    }

    /// @notice Deposit reward into campaign. Call from campaign reward distributor.
    function notifyRewardAmount(uint256 campaignId, uint256 reward) external onlyRewardsDistributor(campaignId) {
        updateCampaign(campaignId, address(0));

        CampaignInfo storage campaign = campaignInfo[campaignId];
        require(block.timestamp < campaign.timestampFinish.sub(campaign.duration), "NFT Jackpot: too late, campaign cancelled");
        require(reward == campaign.totalReward, "NFT Jackpot: invalid reward amount");
        require(campaign.rewardRate == 0, "NFT Jackpot: already notified");

        campaign.rewardRate = reward.div(campaign.duration);
        campaign.lastUpdateTime = campaign.timestampFinish.sub(campaign.duration);
        STAND_CONTRACT.transferFrom(msg.sender, address(this), reward);

        emit LogCampaignRewardAdded(campaignId, reward);
    }

    function onERC721Received(
        address,
        address,
        uint256,
        bytes memory
    ) public virtual override returns (bytes4) {
        return this.onERC721Received.selector;
    }

    function onERC1155Received(
        address,
        address,
        uint256,
        uint256,
        bytes memory
    ) public virtual override returns (bytes4) {
        return this.onERC1155Received.selector;
    }

    function onERC1155BatchReceived(
        address,
        address,
        uint256[] memory,
        uint256[] memory,
        bytes memory
    ) public virtual override returns (bytes4) {
        return this.onERC1155BatchReceived.selector;
    }

    function supportsInterface(bytes4 interfaceId) public view virtual override returns (bool) {
        return _supportedInterfaces[interfaceId];
    }
}

