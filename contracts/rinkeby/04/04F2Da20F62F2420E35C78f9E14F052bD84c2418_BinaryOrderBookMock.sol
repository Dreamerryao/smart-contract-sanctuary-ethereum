pragma solidity ^0.8.0;

import "../minting-factory/IOrderBook.sol";
import "@openzeppelin/contracts/utils/introspection/ERC165.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";

/**
 * @title a mock of {CourtyardOrderBook} that is either always successful or always failing when calling {placeOrder}.
 */
contract BinaryOrderBookMock is ERC165, IOrderBook {

    using EnumerableSet for EnumerableSet.Bytes32Set;

    bool private _successfullyPlacesOrders;     // variable that controls whether orders can successfully be placed.
    EnumerableSet.Bytes32Set private _orderIds;    // All orders successfully placed


    /* Constructor */
    constructor(bool successfullyPlacesOrders) {
        _successfullyPlacesOrders = successfullyPlacesOrders;
    }

    /**
     * @dev See {IERC165-supportsInterface}.
     */
    function supportsInterface(bytes4 interfaceId) public view virtual override(ERC165, IERC165) returns (bool) {
        return interfaceId == type(IOrderBook).interfaceId || super.supportsInterface(interfaceId);
    }

    function _hasBeenPlaced(string memory id) private view returns (bool) {
        return _orderIds.contains(keccak256(abi.encodePacked(id)));
    }

    function hasBeenPlaced(string memory id) external override view returns (bool) {
        return _hasBeenPlaced(id);
    }

    function placeOrder(string memory id, address) external override {
        require(!_hasBeenPlaced(id) && _successfullyPlacesOrders, "BinaryOrderBookMock: Oh no... so sad.");
        _orderIds.add(keccak256(abi.encodePacked(id)));
    }
    
}

