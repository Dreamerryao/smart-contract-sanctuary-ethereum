pragma solidity 0.8.0;
pragma experimental ABIEncoderV2;
import {SafeMath} from "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

interface IDefeLock {
    struct LockedBalance {
        int256 amount;
        uint256 end;
    }
    function createLockFor(
        address _beneficiary,
        uint256 _value,
        uint256 _unlockTime
    ) external;

    function increaseAmountFor(address _beneficiary, uint256 _value) external;
    function getLocked(address _addr) external view returns (LockedBalance memory);
}

contract IFO is Ownable, ReentrancyGuard{
    using SafeMath for uint256;

    uint256 public IFO_SUPPLY = 1e9;

    uint256 public PRICE = 0.0000025 ether;

    uint256 public IdentityThreshold  = 1 ether;

    uint256  public lockThreshold = 20000000;
    
    address public DEFE;
    address public defeLock;
    uint256  public BEGIN_TIME = 1662033600;
    uint256  public END_TIME = 1669809600;

    address public vault;

    uint256 public  DEFAULT_LOCK_PERIOD = 52 * 7 * 86400; // 52 weeks

    uint256 public alreadySellAmount;

    mapping(address=>uint256) public amountPerPerson;

    event LockLog(address indexed buyer, uint256 amount,uint256 lockTime);
    
    event BuyLog(address indexed buyer, uint256 amount);

    event IFOLog(address indexed buyer, uint256 amount);

    event BuyAndLockLog(address indexed buyer, uint256 amount, uint256 lockTime);

    constructor(address _DEFE, address _defeLock){
        DEFE = _DEFE;
        defeLock = _defeLock;
    }


    function setIdentityThreshold(uint256 _IdentityThreshold) public onlyOwner{
        IdentityThreshold = _IdentityThreshold;
    }

    function setLockThreshold(uint256 _lockThreshold) public onlyOwner{
        lockThreshold = _lockThreshold;
    }

    function setTime(uint256 _beginTime,uint256 _endTime) public onlyOwner{
        BEGIN_TIME = _beginTime;
        END_TIME = _endTime;
    }

     function setVault(address _vault) public onlyOwner{
        vault = _vault;
    }

    function setPrice(uint256 _price) public onlyOwner{
        PRICE = _price;
    }

    function setDefaultLockPeriod(uint256 _defaultLockPeriod) public onlyOwner{
        DEFAULT_LOCK_PERIOD = _defaultLockPeriod;
    }

    function buy(uint256 amount) external payable nonReentrant {
        
        buyBeforeCheck(amount);
        uint256 canBuyAmount = msg.value / PRICE;
  
        require(canBuyAmount >= amount, "Insufficient ETH balance in your wallet."); 
    

        uint256 alreadyBuyPersonAmount = amountPerPerson[msg.sender];
        uint256 lockAmount = 0;
        if(alreadyBuyPersonAmount >= lockThreshold){
            lockAmount = amount;
        }else if(alreadyBuyPersonAmount + amount > lockThreshold){
            lockAmount = alreadyBuyPersonAmount + amount - lockThreshold;
        }

        // lock
        if(lockAmount > 0){    
            lockDefe(lockAmount*1e18,block.timestamp + DEFAULT_LOCK_PERIOD);
        }

        uint256 shouldTransferAmount = amount - lockAmount;
        if(shouldTransferAmount > 0){
            IERC20(DEFE).transfer(msg.sender, shouldTransferAmount * 1e18);
        }
        
        buyAfter(amount); 

        emit BuyLog(msg.sender, amount);     

    }

    function buyBeforeCheck(uint256 amount) internal view {
        require(amount <= IFO_SUPPLY - alreadySellAmount, "Available DEFE for sale is not enough.");        
        require(msg.sender.balance >= IdentityThreshold, "You need hold at least 1 ETH.");
        require(block.timestamp >= BEGIN_TIME && block.timestamp <= END_TIME,"IFO has not started.");
    }

    function buyAfter(uint256 amount) internal {
        amountPerPerson[msg.sender] += amount;
        alreadySellAmount += amount;
        uint256 shouldPayETH = PRICE * amount;    

        if(msg.value > shouldPayETH){
            // send rest of ETH
            payable(msg.sender).transfer(msg.value - shouldPayETH);
        }  
        emit IFOLog(msg.sender, amount);
    }

    function lockDefe(uint256 amount,uint256 time) internal{
        IDefeLock.LockedBalance memory locked = IDefeLock(defeLock).getLocked(msg.sender);
        IERC20(DEFE).approve(defeLock,amount);
        if(locked.amount == 0){
            IDefeLock(defeLock).createLockFor(msg.sender,amount,time);
        }else{
            IDefeLock(defeLock).increaseAmountFor(msg.sender,amount);
        }

        emit LockLog(msg.sender,amount,time);
        
    }

    function buyAndLock(uint256 amount,uint256 locktime) external payable nonReentrant{
        buyBeforeCheck(amount);
        uint256 canBuyAmount = msg.value / PRICE; 
        require(canBuyAmount >= amount, "Insufficient ETH balance in your wallet."); 
        require(locktime > block.timestamp, "Error in the lock period you entered.");
        
        lockDefe(amount*1e18,locktime);
        
        buyAfter(amount);

        emit BuyAndLockLog(msg.sender, amount, locktime);
    }

    function turnOutToken(address token, uint256 amount) public onlyOwner{
        IERC20(token).transfer(vault, amount);
    }
    
    function turnOutETH(uint256 amount) public onlyOwner {
        payable(vault).transfer(amount);
    }
    
}

