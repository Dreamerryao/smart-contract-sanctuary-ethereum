import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

import "@uniswap/v2-periphery/contracts/interfaces/IUniswapV2Router02.sol";
import "@uniswap/lib/contracts/libraries/TransferHelper.sol";

import "../../interfaces/IOracle.sol";
import "./Adminable.sol";

abstract contract SushiswapSwaps is Adminable {

    IUniswapV2Router02 public router;
    uint256 public manipulationTolerance; // wei

    bytes32 public constant ORACLE_MANAGER_ROLE = keccak256("ORACLE_MANAGER_ROLE");

    address public oracleAddress;
    address public oracleManager;

    modifier onlyOracleManager {
        require(hasRole(ORACLE_MANAGER_ROLE, _msgSender()), "!oracleManager");
        _;
    }

    constructor(
        address _oracleAddress,
        address _router,
        address _oracleManager
    ) {
        oracleAddress = _oracleAddress;
        router = IUniswapV2Router02(_router);
        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
        _setupRole(ORACLE_MANAGER_ROLE, _oracleManager);
        oracleManager = _oracleManager;
    }

    function setOracle(address _newOracle) external onlyOracleManager {
        oracleAddress = _newOracle;
    }

    function setOracleManagerRole(address _oracleManager) external onlyAdmin {
        revokeRole(ORACLE_MANAGER_ROLE, oracleManager);
        grantRole(ORACLE_MANAGER_ROLE, _oracleManager);
        oracleManager = _oracleManager;
    }

    function setManipulationTolerance(uint256 _manipulationTolerance) external onlyOracleManager {
        manipulationTolerance = _manipulationTolerance;
    }

    function _deviationSmOrEqThan(uint256 a, uint256 b, uint256 deviation) internal returns(bool) {
        if (a > b) {
            return a - b <= deviation;
        } else {
            return b - a <= deviation;
        }
    }

    function _prepareSwap(
        address _token0,
        address _token1,
        uint256 _amount
    ) internal returns(address[] memory path) {
        path = new address[](2);
        path[0] = _token0;
        path[1] = _token1;

        uint256 amountOut = router.getAmountsOut(_amount, path)[0];

        if (oracleAddress != address(0)) {
            require(
              _deviationSmOrEqThan(
                IOracle(oracleAddress).consult(_token0, _amount, _token1),
                amountOut,
                manipulationTolerance
              ),
              "manipulationDetected"
            );
        }
    }

    function _swapFromETH(
        address _token1,
        uint256 _amount,
        address _recipient,
        uint256 _amountOutMin,
        uint256 _deadline
    ) internal returns(uint256 amountOut) {
        (address[] memory path) = _prepareSwap(
            router.WETH(),
            _token1,
            _amount
        );

        amountOut = router.swapExactETHForTokens{value: _amount}(
            _amountOutMin,
            path,
            _recipient,
            _deadline
        )[1];
    }

    function _swapToTokenThroughEth(
        address _token0,
        address _token1,
        uint256 _amount,
        address _recipient,
        uint256 _amountOutMin,
        uint256 _deadline
    ) internal returns(uint256 amountOut) {
        address[] memory path = new address[](3);
        path[0] = _token0;
        path[1] = router.WETH();
        path[2] = _token1;

        TransferHelper.safeApprove(_token0, address(router), _amount);

        amountOut = router.swapExactTokensForTokens(
            _amount,
            _amountOutMin,
            path,
            _recipient,
            _deadline
        )[2];

    }

    function _swapToETH(
        address _token0,
        uint256 _amount,
        address _recipient,
        uint256 _amountOutMin,
        uint256 _deadline
    ) internal returns(uint256 amountOut) {
        (address[] memory path) = _prepareSwap(
            _token0,
            router.WETH(),
            _amount
        );

        TransferHelper.safeApprove(_token0, address(router), _amount);

        amountOut = router.swapExactTokensForETH(
            _amount,
            _amountOutMin,
            path,
            _recipient,
            _deadline
        )[1];
    }

    function _swapTokens(
        address _token0,
        address _token1,
        uint256 _amount,
        address _recipient,
        uint256 _amountOutMin,
        uint256 _deadline
    ) internal returns(uint256 amountOut) {
        (address[] memory path) = _prepareSwap(
            _token0,
            _token1,
            _amount
        );

        TransferHelper.safeApprove(_token0, address(router), _amount);

        amountOut = router.swapExactTokensForTokens(
            _amount,
            _amountOutMin,
            path,
            _recipient,
            _deadline
        )[1];
    }
}