    using SafeERC20 for IERC20;

    address public constant ETH = 0xEeeeeEeeeEeEeeEeEeEeeEEEeeeeEeeeeeeeEEeE; // like in curve
    uint256 public constant MAX_BP = 10000;

    address public admin;

    constructor() {
        address sender = _msgSender();
        _setupRole(DEFAULT_ADMIN_ROLE, sender);
        admin = sender;
    }

    modifier onlyAdmin {
        require(hasRole(DEFAULT_ADMIN_ROLE, _msgSender()), "!admin");
        _;
    }

    function setAdminRole(address _admin) external onlyAdmin {
        _setupRole(DEFAULT_ADMIN_ROLE, _admin);
        admin = _admin;
    }

    function evacuateTokens(address _token, uint256 _amount) external onlyAdmin {
        address _admin = admin;
        if (_token == ETH) {
            Address.sendValue(payable(_admin), _amount);
        } else {
            IERC20(_token).safeTransfer(_admin, _amount);
        }
    }

}

pragma solidity =0.7.6;
