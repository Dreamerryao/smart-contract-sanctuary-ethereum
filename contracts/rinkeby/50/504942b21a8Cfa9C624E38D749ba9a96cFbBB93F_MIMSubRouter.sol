        xbe = params._xbe;
        mim = params._addresses[0];
        dai = params._addresses[1];
        usdc = params._addresses[2];
        usdt = params._addresses[3];
        curveMimMetaPool = params._curveMimMetaPool;
        curve3PoolZap = ICurve3PoolDepositZap(params._curve3PoolZap);
        mimHiveVault = IVaultTransfers(params._mimHiveVault);
        votingStakingRewards = IVotingStakingRewards(params._votingStakingRewards);
        for (uint256 i = 0; i < params._tokenIdxsInCurvePool.length; i++) {
            tokenToIndex[params._addresses[i]] = params._tokenIdxsInCurvePool[i];
        }
    }

    modifier onlyValidToken(address token) {
        require(token == usdc || token == dai || token == usdt || token == ETH || token == mim, "invalidToken");
        _;
    }

    function setIndexToToken(address _token, uint256 _index) external onlyAdmin {
        tokenToIndex[_token] = _index;
    }

    function deposit(
        DepositParams memory params
    )
        external
        payable
        override
        onlyValidToken(params.token)
        onlyOwner
        returns(uint256)
    {
        uint256 tokensReceived;
        uint256 swappedAmountBToXBE;

        if (params.token == ETH) {
            tokensReceived = _swapFromETH(
                usdc,
                params.amountA,
                address(this),
                params.minAmount,
                params.deadline
            );
            params.token = usdc;
            swappedAmountBToXBE = _swapFromETH(
                xbe,
                params.amountB,
                address(this),
                params.minAmountXBE,
                params.deadline
            );
        } else {
            TransferHelper.safeTransferFrom(
                params.token,
                params.recipient,
                address(this),
                params.amountA + params.amountB
            );
            tokensReceived = params.amountA;
            swappedAmountBToXBE = _swapToTokenThroughEth(
                params.token,
                xbe,
                params.amountB,
                address(this),
                params.minAmountXBE,
                params.deadline
            );
        }

        votingStakingRewards.stakeFor(params.recipient, swappedAmountBToXBE);

        uint256[4] memory amounts = [uint256(0), uint256(0), uint256(0), uint256(0)];
        amounts[tokenToIndex[params.token]] = tokensReceived;
        TransferHelper.safeApprove(params.token, address(curve3PoolZap), tokensReceived);
        uint256 curve3PoolZapLpAmount = curve3PoolZap.add_liquidity(
            curveMimMetaPool,
            amounts,
            params.minAmountLP,
            address(this)
        );
        TransferHelper.safeApprove(curveMimMetaPool, address(mimHiveVault), curve3PoolZapLpAmount);
        mimHiveVault.depositFor(curve3PoolZapLpAmount, params.recipient);
        return curve3PoolZapLpAmount;
    }

    function withdraw(
        WithdrawParams memory params
    )
        external
        override
        onlyValidToken(params.token)
        onlyOwner
        returns(uint256 amountReceived)
    {
        TransferHelper.safeTransferFrom(address(mimHiveVault), params.recipient, address(this), params.amount);

        uint256 balanceBefore = IERC20(curveMimMetaPool).balanceOf(address(this));
        mimHiveVault.withdraw(params.amount);
        uint256 balanceAfter = IERC20(curveMimMetaPool).balanceOf(address(this));
        require(balanceAfter > balanceBefore, "nothingToWithdraw");
        uint256 curveMimLpAmount = balanceAfter - balanceBefore;

        amountReceived = curve3PoolZap.remove_liquidity_one_coin(
            curveMimMetaPool,
            curveMimLpAmount,
            int128(uint128(tokenToIndex[params.token])),
            params.amountOutMinForCurve,
            address(this)
        );

        if (params.token == ETH) {
            amountReceived = _swapToETH(
                usdc,
                amountReceived,
                params.recipient,
                params.amountOutMinForUniswap,
                params.deadline
            );
        } else {
            IERC20(params.token).safeTransfer(params.recipient, amountReceived);
        }
    }

    function close() external override onlyOwner {
        selfdestruct(payable(owner()));
    }

    function depositWithUniV3(DepositParamsUniV3 memory params) external override payable returns(uint256) {
        revert('depositUniV3NotAllowed');
    }

    function withdrawWithUniV3(WithdrawParamsUniV3 memory params) external override returns(uint256) {
        revert('withdrawUniV3NotAllowed');
    }

}

