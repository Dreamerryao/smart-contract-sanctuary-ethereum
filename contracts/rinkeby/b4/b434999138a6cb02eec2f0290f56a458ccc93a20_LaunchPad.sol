import "./interfaces/IPad.sol";
import "openzeppelin-contracts/contracts/proxy/Clones.sol";
import "openzeppelin-contracts/contracts/access/AccessControl.sol";
import "chainlink/LinkTokenInterface.sol";
import "chainlink/VRFCoordinatorV2Interface.sol";
import "chainlink/VRFConsumerBaseV2.sol";

contract LaunchPad is AccessControl, VRFConsumerBaseV2 {
    bytes32 public constant KAPPATEAM_ROLE = keccak256("KAPPATEAM_ROLE");
    address public template;

    mapping(uint256 => address) private pads;
    uint256 public padsCount;

    // ChainlinkVRF
    VRFCoordinatorV2Interface COORDINATOR;
    LinkTokenInterface LINKTOKEN;
    // Rinkeby coordinator
    /* address kappa = ; */
    address vrfCoordinator = 0x6168499c0cFfCaCD319c818142124B7A15E857ab;
    address link = 0x01BE23585060835E02B77ef475b0Cc51aA1e0709;
    bytes32 keyHash = 0xd89b2bf150e3b9e13446986e571fb9cab24b13cea0a43ea20a6049a85cc807cc;
    // BSC Testnet coordinator
    /* address vrfCoordinator = 0x6A2AAd07396B36Fe02a22b33cf443582f682c82f;
    address link = 0x84b9B910527Ad5C03A9Ca831909E21e236EA7b06;
    bytes32 keyHash = 0xd4bb89654db74673a187bd804519e65e3f71a52bc55f11da7601a13dcf505314; */
    uint32 callbackGasLimit = 100000;
    uint16 requestConfirmations = 3;
    uint32 numWords =  1;

    mapping (uint256 => uint256) requestIds;
    uint64 public s_subscriptionId;

    event PadCreated(address padAddress, uint256 padIndex);
    event PadTemplateChanged(address _newTemplate);

    constructor(address _template) VRFConsumerBaseV2(vrfCoordinator) {
        template = _template;
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(KAPPATEAM_ROLE, msg.sender);
        COORDINATOR = VRFCoordinatorV2Interface(vrfCoordinator);
        LINKTOKEN = LinkTokenInterface(link);
    }

    function setSubscription(uint64 _s_subscriptionId) external onlyRole(KAPPATEAM_ROLE) {
      s_subscriptionId = _s_subscriptionId;
    }

    ///@dev request to chainlinkVRF
    function runLottery(uint256 padId) external onlyRole(KAPPATEAM_ROLE){
      require(s_subscriptionId != 0, "Subscription Id not set");
      requestIds[padId] = COORDINATOR.requestRandomWords(
        keyHash,
        s_subscriptionId,
        requestConfirmations,
        callbackGasLimit,
        numWords
      );
    }
     ///@dev automatic function to get the chainlinkVRF value
     function fulfillRandomWords(
       uint256 requestId,
       uint256[] memory randomWords
     ) internal override {
       uint256 lotteryAnswer = randomWords[0];
       uint256 padRequester = requestIds[requestId];
       IPad pad = IPad(pads[padRequester]);
       pad.fulfillLottery(lotteryAnswer);
     }

    function createPad(
      address _kappa, // this wont be here
      address _tokenRequested,
      address _multisig,
      address _kappaTeamAddress,
      address _teamAddress
      )
        external
        onlyRole(KAPPATEAM_ROLE)
        returns (address newPadAddress)
    {
        newPadAddress = Clones.clone(template);
        uint256 padIndex = padsCount;
        pads[padIndex] = newPadAddress;
        padsCount += 1;
        IPad(newPadAddress).init(
          _kappa,
          _tokenRequested,
          _multisig,
          _kappaTeamAddress,
          _teamAddress
          );
        emit PadCreated(newPadAddress, padIndex);
    }

    function grantRolePad(bytes32 role, address account, uint256 padId)
      public
      onlyRole(DEFAULT_ADMIN_ROLE)
    {
        IPad(pads[padId]).grantRole(role, account);
    }

    function revokeRolePad(bytes32 role, address account, uint256 padId)
      public
      onlyRole(DEFAULT_ADMIN_ROLE)
    {
        IPad(pads[padId]).revokeRole(role, account);
    }

    function changeTemplate(address _newTemplate)
        external
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        template = _newTemplate;
        emit PadTemplateChanged(_newTemplate);
    }
    ///////////////////////////////////////////////////VIEW FUNCTIONS
    function getPadAddress(uint256 _index) external view returns (address) {
        return pads[_index];
    }

}

