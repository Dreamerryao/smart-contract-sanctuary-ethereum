pragma solidity 0.8.16;

import "./metatx/SmartRightsContext.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "./nfts/ISmartRightsNFT.sol";

contract SmartRightsNFTClaimer is SmartRightsContext {

    struct NFTData {
        uint256 counter;
        uint64 startDate;
        uint64 endDate;
        uint16 maxMints;
    }

    mapping(address => NFTData) private nftData;
    mapping(address => mapping(address => uint256)) private userMints; 
    address public owner;

    event onNFTData(address _nft, uint128 _startDate, uint128 _endDate, uint16 _maxMints);
    event onNFTClaimed(address _nft, uint256 _id, address _owner);

    constructor(address _forwarder) SmartRightsContext(_forwarder) {
        owner = _msgSender();
    }

    function setNFTData(address _nft, uint64 _startDate, uint64 _endDate, uint16 _maxMints) external {
        require(_msgSender() == owner, "OnlyOwner");

        nftData[_nft] = NFTData({
            startDate: _startDate,
            endDate: _endDate,
            maxMints: _maxMints,
            counter: 0
        });

        emit onNFTData(_nft, _startDate, _endDate, _maxMints);
    }

    function claimNFT(address _nft) external {
        require(block.timestamp >= nftData[_nft].startDate && block.timestamp <= nftData[_nft].endDate, "BadTime");
        require(userMints[_msgSender()][_nft] < nftData[_nft].maxMints, "MaxMints");

        userMints[_msgSender()][_nft]++;
        ISmartRightsNFT(_nft).safeMint(_msgSender(), ++nftData[_nft].counter);

        emit onNFTClaimed(_nft, nftData[_nft].counter, _msgSender());
    }
}

