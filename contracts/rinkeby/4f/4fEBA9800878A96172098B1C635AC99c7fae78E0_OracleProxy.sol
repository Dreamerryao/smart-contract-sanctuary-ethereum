pragma solidity ^0.8.0;
import "@chainlink/contracts/src/v0.8/interfaces/AggregatorV3Interface.sol";
import "./OracleAccessControl.sol";

contract OracleProxy is OracleAccessControl{

    AggregatorV3Interface oracle;
    bool useOracle;
    uint256 defaultPrice;

    constructor(AggregatorV3Interface _oracle){
        oracle = _oracle;
        defaultPrice = 10**18;
        useOracle = false;
    }
    function setUseOracle(bool _status)public onlyRole(OWNER_ROLE){
        useOracle = _status;
    }
    function setDefaultPrice(uint256 _def)public onlyRole(OWNER_ROLE){
        defaultPrice = _def;
    }

    function setOracle(AggregatorV3Interface _ora)public onlyRole(OWNER_ROLE){
        oracle = _ora;
    }

    function decimals()public view returns(uint8){
        return oracle.decimals();
    }

    function getONEUSD() public view returns (uint256,uint8) {
        uint256 price = defaultPrice;
        uint8 decimal = 18;
        if (useOracle){
            (
            uint80 roundID,
            int price_,
            uint startedAt,
            uint timeStamp,
            uint80 answeredInRound
            ) = oracle.latestRoundData();
            price = uint256(price_);
            decimal = decimals();
        }

        return( price,decimal);
    }

    function destroy() public onlyRole(OWNER_ROLE) {
        selfdestruct(payable(defaultOwner));
    }


}

