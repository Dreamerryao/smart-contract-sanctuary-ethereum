contract TokenFarm {

    using SafeMath for uint256;

    string public name = "ARG Token Farm";
    address public owner;
    ARGToken public argToken ;
    DaiToken public daiToken;

    address[] public stakers;

    uint256 public totalBalance;
    mapping(address => uint256) public stakingBalance;
    mapping(address => bool) public hasStaked;
    mapping(address => bool) public isStaking;
    mapping(address => uint256) public lastClaimTimes;


    constructor (ARGToken _argToken, DaiToken _daiToken) public{
        argToken = _argToken;
        daiToken = _daiToken;
        owner = msg.sender;
    }

    function stakeTokens (uint _amount) public {
        require(_amount > 0, 'amount cannot be zero');
        daiToken.transferFrom(msg.sender, address(this), _amount);
        stakingBalance[msg.sender] = stakingBalance[msg.sender] + _amount ;
        if (!hasStaked[msg.sender]){
            stakers.push(msg.sender);
        }
        isStaking[msg.sender] = true;
        hasStaked[msg.sender] = true;

        lastClaimTimes[msg.sender] = block.timestamp;

        totalBalance = totalBalance + _amount;
    }

    function issueTokens() public {
        // require(msg.sender == owner, 'function caller must be owner' );
        for (uint8 i; i < stakers.length ; i++){            
            address investor = stakers[i];
            if (isStaking[investor]){
                uint balance = stakingBalance[investor];
                if (balance > 0){
                    argToken.transfer(investor, balance);
                }
            }
        }
    }

       // Unstaking Tokens (Withdraw)
    function unstakeTokens() public {
        // Fetch staking balance
        uint balance = stakingBalance[msg.sender];

        // Require amount greater than 0
        require(balance > 0, "staking balance cannot be 0");

        // Transfer Mock Dai tokens to this contract for staking
        daiToken.transfer(msg.sender, balance);

        // Reset staking balance
        stakingBalance[msg.sender] = 0;

        // Update staking status
        isStaking[msg.sender] = false;

        totalBalance = totalBalance - balance;
    }

    event Debug(uint256 currentTimeStamp, uint256 lastClaimTime, uint256 stakingBalance, uint256 totalBalance);

    function estimatedBalanceOf() public view returns (uint256) {
        require(isStaking[msg.sender], "account must be staker");

        uint256 lastClaimTime = lastClaimTimes[msg.sender];
        if (lastClaimTime == 0) {
            revert("Shit happens");
        }

        uint256 timeDifference = block.timestamp.sub(lastClaimTime);

        return timeDifference.mul(5000).mul(1 ether); // .mul(stakingBalance[msg.sender]).div(totalBalance);
    }
}