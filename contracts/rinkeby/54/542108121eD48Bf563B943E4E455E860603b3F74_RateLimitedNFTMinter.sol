pragma solidity ^0.8.0;

import "openzeppelin-solidity/contracts/utils/math/Math.sol";
import "openzeppelin-solidity/contracts/utils/math/SafeMath.sol";

import "./IGUDCoin.sol";
import "./NFTMinter.sol";

contract RateLimitedNFTMinter is NFTMinter {

  using SafeMath for uint;

  // Max number of redemptions performed at one time.
  uint public maxRedemptions;
  // How long it takes all redemptions to generate after depletion.
  uint public regenerationTime;

  function initialize(address tokenAddress, address itemAddress) virtual override public initializer {
    NFTMinter.initialize(tokenAddress, itemAddress);
    maxRedemptions = 6;
    regenerationTime = 24 * 60 * 60;
  }

  function setRedemptionParams(uint _maxRedemptions, uint _regenerationTime) onlyRole(DEFAULT_ADMIN_ROLE) external {
    maxRedemptions = _maxRedemptions;
    regenerationTime = _regenerationTime;
  }

  // Whenever the user redeems a receipt, we record the current block and the
  // number of redemptions they have remaining at this time.
  mapping(uint => uint) _lastRedemptionTime;
  mapping(uint => uint) _lastRedemptionPercent;

  function _nftKey(address tokenAddress, uint tokenId) pure internal returns (uint) {
    return uint(uint160(tokenAddress)) | (tokenId << 160);
  }

  function redemptionPercent(address tokenAddress, uint tokenId) view public returns (uint) {
    uint maxPercent = maxRedemptions.mul(100);
    uint nftKey = _nftKey(tokenAddress, tokenId);

    if (_lastRedemptionTime[nftKey] == 0) {
      return maxPercent;
    } else {
      return Math.min(
          _lastRedemptionPercent[nftKey].add(
              block.timestamp
                  .sub(_lastRedemptionTime[nftKey])
                  .mul(maxPercent)
                  .div(regenerationTime)),
          maxPercent);
    }
  }

  function _setRedemptionPercent(address tokenAddress, uint tokenId, uint newRedemptionPercent) internal {
    uint nftKey = _nftKey(tokenAddress, tokenId);
    _lastRedemptionPercent[nftKey] = newRedemptionPercent;
    _lastRedemptionTime[nftKey] = block.timestamp;
  }

  function _beforeRedeem(NFTReceipt memory receipt) override internal {
    uint redemptionPercentAvailable = redemptionPercent(receipt.tokenAddress, receipt.tokenId);
    require(redemptionPercentAvailable >= 100, "Please wait before redeeming again.");
    _setRedemptionPercent(receipt.tokenAddress, receipt.tokenId, redemptionPercentAvailable - 100);
  }
}

