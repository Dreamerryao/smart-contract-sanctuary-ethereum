pragma solidity ^0.8.0;

import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "openzeppelin-solidity/contracts/token/ERC721/IERC721.sol";
import "openzeppelin-solidity/contracts/utils/cryptography/ECDSA.sol";
import "@openzeppelin/contracts-upgradeable/utils/AddressUpgradeable.sol";

import "./IGUDCharacter.sol";
import "./IGUDCoin.sol";
import "./IGUDItem.sol";

contract NFTMinter is Initializable, AccessControlUpgradeable {

  bytes32 public constant PLAYABLE = keccak256("PLAYABLE");
  bytes32 public constant BANNER = keccak256("BANNER");
  bytes32 public constant SIGNER = keccak256("SIGNER");

  IGUDCoin internal gudContract;
  IGUDItem internal itemContract;

  function initialize(address tokenAddress, address itemAddress) public virtual initializer {
    gudContract = IGUDCoin(tokenAddress);
    itemContract = IGUDItem(itemAddress);

    _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
  }

  bytes32 constant internal EIP712_DOMAIN_TYPEHASH = keccak256(
      "EIP712Domain(string name,string version,uint256 chainId,address verifyingContract)");

  function eip712DomainSeparator() internal view returns (bytes32) {
    return keccak256(abi.encode(
        EIP712_DOMAIN_TYPEHASH,
        keccak256(bytes("NFTMinter")),
        keccak256(bytes("1")),
        block.chainid,
        address(this)));
  }

  bytes32 constant internal RECEIPT_TYPEHASH = keccak256(
      "NFTReceipt(address tokenAddress,uint tokenId,uint coinReward,uint xpReward,uint[] burnItemIds,uint[] burnItemAmounts,uint[] mintItemIds,uint[] mintItemAmounts,uint expiration,uint nonce)");

  struct NFTReceipt {
    // The sender of the transaction must own this NFT to redeem this receipt.
    address tokenAddress;
    uint tokenId;
    // The amount of GUD token that will be redeemed.
    uint coinReward;
    // The amount of XP that will be accrued by the NFT character.
    uint xpReward;
    // GUD items that will be consumed.
    uint[] burnItemIds;
    uint[] burnItemAmounts;
    // GUD items that will be minted.
    uint[] mintItemIds;
    uint[] mintItemAmounts;
    // This receipt must be redeemed before this block number, or it will expire.
    uint expiration;
    // A unique nonce for this receipt.
    uint nonce;


    // Must be signed by an authorized signer.
    // NOTE: This is NOT included in EIP-712 signatures! If populated, this field is a signature of
    // other fields.
    bytes signature;
  }

  function receiptHash(NFTReceipt memory receipt) public pure returns (bytes32) {
    return keccak256(abi.encode(
        RECEIPT_TYPEHASH,
        receipt.tokenAddress,
        receipt.tokenId,
        receipt.coinReward,
        receipt.xpReward,
        keccak256(abi.encodePacked(receipt.burnItemIds)),
        keccak256(abi.encodePacked(receipt.burnItemAmounts)),
        keccak256(abi.encodePacked(receipt.mintItemIds)),
        keccak256(abi.encodePacked(receipt.mintItemAmounts)),
        receipt.expiration,
        receipt.nonce));
  }

  event GudCoinMinted(address indexed tokenAddress, uint indexed tokenId, uint coinReward);

  // Mapping to track receipts which have already been redeemed
  mapping(uint => mapping(uint => bool)) _receiptsRedeemed;

  // List of authorized NFTs
  address[] public authorizedNftList;
  mapping(address => uint) _authorizedNftIndex;

  function authorizedNftCount() external view returns (uint) {
    return authorizedNftList.length;
  }

  function grantRole(bytes32 role, address account) public virtual override onlyRole(getRoleAdmin(role)) {
    if (role == PLAYABLE && !hasRole(role, account)) {
      require(AddressUpgradeable.isContract(account), "Only contract addresses can be playable.");

      _authorizedNftIndex[account] = authorizedNftList.length;
      authorizedNftList.push(account);
    }
    super.grantRole(role, account);
  }

  function revokeRole(bytes32 role, address account) public virtual override onlyRole(getRoleAdmin(role)) {
    if (role == PLAYABLE && hasRole(role, account)) {
      uint index = _authorizedNftIndex[account];
      if (index < authorizedNftList.length - 1) {
        authorizedNftList[index] = authorizedNftList[authorizedNftList.length - 1];
      }
      authorizedNftList.pop();
      delete _authorizedNftIndex[account];
    }
    super.revokeRole(role, account);
  }

  event TokenBanned(address indexed nftAddress, uint indexed tokenId, uint untilBlockNumber);
  event TokenUnbanned(address indexed nftAddress, uint indexed tokenId);

  // Mapping to track banned tokens, and when their bans expire
  mapping(address => mapping(uint => uint)) tokenBannedUntil;

  function ban(address nftAddress, uint tokenId, uint untilBlockNumber) onlyRole(BANNER) external {
    _checkRole(PLAYABLE, nftAddress);
    require(untilBlockNumber > block.number, "Bans must be in the future.");
    tokenBannedUntil[nftAddress][tokenId] = untilBlockNumber;
    emit TokenBanned(nftAddress, tokenId, untilBlockNumber);
  }

  function unban(address nftAddress, uint tokenId) onlyRole(BANNER) external {
    _checkRole(PLAYABLE, nftAddress);
    require(tokenBannedUntil[nftAddress][tokenId] > 0, "Token is not banned.");
    delete tokenBannedUntil[nftAddress][tokenId];
    emit TokenUnbanned(nftAddress, tokenId);
  }

  function isBanned(address nftAddress, uint tokenId) public view returns (bool) {
    return tokenBannedUntil[nftAddress][tokenId] > block.number;
  }

  function _redeem(NFTReceipt memory receipt) private {
    _checkRole(PLAYABLE, receipt.tokenAddress);
    require(IERC721(receipt.tokenAddress).ownerOf(receipt.tokenId) == _msgSender(),
        "Only the NFT owner can redeem a receipt.");
    require(receipt.expiration > block.number, "Receipt is expired.");
    uint nftKey = uint(uint160(receipt.tokenAddress)) | (receipt.tokenId << 160);
    require(!_receiptsRedeemed[nftKey][receipt.nonce], "Receipt was already redeemed.");
    require(!isBanned(receipt.tokenAddress, receipt.tokenId), "Token is banned.");
    _beforeRedeem(receipt);
    _receiptsRedeemed[nftKey][receipt.nonce] = true;
    _checkRole(SIGNER,
        ECDSA.recover(
            ECDSA.toTypedDataHash(eip712DomainSeparator(), receiptHash(receipt)),
            receipt.signature));
    IGUDCharacter(receipt.tokenAddress).upgrade(receipt.tokenId, receipt.xpReward);
  }

  function redeem(
      address to,
      NFTReceipt calldata receipt) external {
    _redeem(receipt);
    gudContract.mint(to, receipt.coinReward);
    if (receipt.burnItemIds.length > 0) {
      itemContract.burnBatch(to, receipt.burnItemIds, receipt.burnItemAmounts);
    }
    if (receipt.mintItemIds.length > 0) {
      itemContract.mintBatch(to, receipt.mintItemIds, receipt.mintItemAmounts);
    }
    emit GudCoinMinted(receipt.tokenAddress, receipt.tokenId, receipt.coinReward);
  }

  function redeemAll(
      address to,
      NFTReceipt[] calldata receipts) external {
    uint totalMinted = 0;
    for (uint i = 0; i < receipts.length; ++i) {
      _redeem(receipts[i]);
      totalMinted += receipts[i].coinReward;
    }
    gudContract.mint(to, totalMinted);
  }

  // Subclasses can override this to place additional restrictions on receipt redemption.
  function _beforeRedeem(NFTReceipt memory receipt) internal virtual {}
}

