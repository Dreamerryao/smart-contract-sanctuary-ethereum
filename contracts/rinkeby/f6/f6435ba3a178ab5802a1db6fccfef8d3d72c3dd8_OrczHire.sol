import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "https://github.com/Uniswap/v3-core/blob/main/contracts/interfaces/IUniswapV3Pool.sol";
import "https://github.com/Uniswap/v3-core/blob/main/contracts/interfaces/IUniswapV3Factory.sol";
import "./IGoldz.sol";

contract OrczHire is AccessControl {
    using SafeMath for uint;

    bytes32 public constant ADMIN_ROLE = keccak256("ADMIN_ROLE");

    IGoldz goldz = IGoldz(0x65831300D395E93065a7284f450B63293B640458);
    address constant WETH = 0xc778417E063141139Fce010982780140Aa0cD5Ab;
    IUniswapV3Factory public constant factory = IUniswapV3Factory(0x1F98431c8aD98523631AE4a59f267346ea31F984);

    mapping(uint => uint) _orcToHiredUntilTimestamp;

    uint8[] public daysToHire;
    uint[] public prices;
    
    constructor() {
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _setupRole(ADMIN_ROLE, msg.sender);

        prices = [
            0.01 ether,
            0.02 ether,
            0.03 ether
        ];

        daysToHire = [
            7,
            14,
            30
        ];
    }

    function hire(uint[] memory orcIds, uint daysToHireIndex) external {
        require(daysToHire[daysToHireIndex] > 0, "invalid days to hire index");
        
        goldz.transferFrom(msg.sender, address(this), prices[daysToHireIndex].mul(orcIds.length).div(goldzPriceInETH()));

        for (uint i = 0; i < orcIds.length; i++) {
            if (_orcToHiredUntilTimestamp[orcIds[i]] == 0) {
                _orcToHiredUntilTimestamp[orcIds[i]] = block.timestamp + daysToHire[daysToHireIndex] * 1 days;
            } else {
                _orcToHiredUntilTimestamp[orcIds[i]] += daysToHire[daysToHireIndex] * 1 days;
            }
        }
    }

    function adminHire(uint[] memory orcIds, uint daysToHireIndex) external onlyRole(ADMIN_ROLE) {
        require(daysToHire[daysToHireIndex] > 0, "invalid days to hire index");
        
        for (uint i = 0; i < orcIds.length; i++) {
            if (_orcToHiredUntilTimestamp[orcIds[i]] == 0) {
                _orcToHiredUntilTimestamp[orcIds[i]] = block.timestamp + daysToHire[daysToHireIndex] * 1 days;
            } else {
                _orcToHiredUntilTimestamp[orcIds[i]] += daysToHire[daysToHireIndex] * 1 days;
            }
        }
    }
    
    function setPricesAndDays(uint[] memory newPrices, uint8[] memory newDays) external onlyRole(ADMIN_ROLE) {
        prices = newPrices;
        daysToHire = newDays;
    }

    function orcHiredUntilTimestamp(uint orcId) external view returns (uint) {
        return _orcToHiredUntilTimestamp[orcId];
    }

    function orcHiredUntilTimestamp(uint[] memory orcIds) external view returns (uint[] memory timestamps) {
        timestamps = new uint[](orcIds.length);
        for (uint i = 0; i < orcIds.length; i++) {
            timestamps[i] = _orcToHiredUntilTimestamp[orcIds[i]];
        }
        return timestamps;
    }

    function totalHiredOrcz() public view returns (uint total) {
        for (uint i = 0; i < 4444; i++) {
            if (_orcToHiredUntilTimestamp[i] > block.timestamp) total++;
        }

        return total;
    }

    function hiredOrcz() external view returns (uint[] memory hiredOrczIds) {
        uint hiredOrczCount = totalHiredOrcz();
        hiredOrczIds = new uint[](hiredOrczCount);
        uint index;
        for (uint i = 0; i < 4444; i++) {
            if (_orcToHiredUntilTimestamp[i] > block.timestamp) hiredOrczIds[index++] = i;
        }

        return hiredOrczIds;
    }

    function goldzPriceInETH() public view returns (uint price) {
        IUniswapV3Pool pool = IUniswapV3Pool(factory.getPool(WETH, address(goldz), 3000));
        (uint160 sqrtPriceX96,,,,,,) =  pool.slot0();
        return uint(sqrtPriceX96).mul(uint(sqrtPriceX96)).mul(1e18) >> (96 * 2);
    }

    function withdrawGoldz() external onlyRole(ADMIN_ROLE) {
        uint amount = goldz.balanceOf(address(this));
        goldz.transfer(msg.sender, amount);
    }

    function burnGoldz() external onlyRole(ADMIN_ROLE) {
        uint balance = goldz.balanceOf(address(this));
        goldz.burn(balance);
    }
}

