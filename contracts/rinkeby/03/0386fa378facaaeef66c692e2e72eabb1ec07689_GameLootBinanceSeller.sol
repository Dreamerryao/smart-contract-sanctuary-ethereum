interface IEquipment {
    function mint(address reciever, uint256 amount) external payable;

    function setRevealed(uint256 tokenID) external;

    function totalSupply() external view returns (uint256);
}

contract GameLootBinanceSeller is Ownable {
    address public equipment;
    IERC721 public binanceNFT;

    bytes32 public root;

    event Claim(address equipment, uint256 tokenID);

    constructor(address equipment_, address binanceNFT_) {
        equipment = equipment_;
        binanceNFT = IERC721(binanceNFT_);
    }

    function OpenBlindBox(
        uint256 tokenID,
        uint128[] memory attrIDs_,
        uint128[] memory attrValues_,
        bytes32[] calldata proofs
    ) public {
        // merkle verify
        bytes32 leaf = keccak256(
            abi.encode(tokenID, attrIDs_, attrValues_)
        );
        require(
            MerkleProof.verify(proofs, root, leaf),
            "Merkle proof is wrong"
        );

        // transferFrom will check tokenID owner.
        binanceNFT.transferFrom(msg.sender, address(this), tokenID);
        require(
            binanceNFT.ownerOf(tokenID) == address(this),
            "blindbox has not been locked"
        );

        // mint
        uint256 tokenID_ = IEquipment(equipment).totalSupply();
        IGameLoot(equipment).attachBatch(tokenID_, attrIDs_, attrValues_);
        IEquipment(equipment).mint(msg.sender, 1);
        IEquipment(equipment).setRevealed(tokenID_);

        emit Claim(equipment, tokenID_);
    }

    /* ----------- owner ----------- */

    function setRoot(bytes32 root_) public onlyOwner {
        root = root_;
    }

    function setEquipment(address equipment_) public onlyOwner {
        equipment = equipment_;
    }
}