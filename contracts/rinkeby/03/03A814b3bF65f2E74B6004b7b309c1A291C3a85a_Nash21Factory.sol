pragma solidity ^0.8.9;

import "@openzeppelin/contracts-upgradeable/token/ERC721/extensions/ERC721URIStorageUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC721/extensions/ERC721EnumerableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/cryptography/SignatureCheckerUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/cryptography/draft-EIP712Upgradeable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "./utils/UUPSUpgradeableByRole.sol";
import "./interfaces/INash21Manager.sol";
import "./interfaces/INash21Guarantee.sol";

contract Nash21Factory is UUPSUpgradeableByRole, ERC721URIStorageUpgradeable, ERC721EnumerableUpgradeable, EIP712Upgradeable {
    
    struct Data {
        uint256 origin;
        uint256 releasePerBlock;
        bytes32 currency;
        uint from;
        uint to;
    }

    // solhint-disable-next-line var-name-mixedcase
    bytes32 private immutable _N21_FACTORY_TYPEHASH = 
        keccak256("Create(bytes32 hashId,address account,uint256 value,bytes32 currency,uint256 from,uint256 to,uint256 deadline)");

    string private _baseTokenURI;
    string private _contractUri;
    mapping(uint256 => address) public authorized;
    mapping(bytes32 => bool) public unauthorized;
    mapping(uint256 => Data) public data;
    mapping(bytes32 => uint256) public hashMap;
    uint256 public nextTokenId;
    uint256 public creationFee;

    event Authorize(bytes32 hashId, address account, uint256 id, uint256 releasePerBlock, bytes32 currency, uint from, uint to);
    event Unauthorize(bytes32 hashId, uint256 id, address account, uint256 value, bytes32 currency, uint from, uint to, uint256 deadline);
    event Create(address account, uint256 id);
    event Burn(address account, uint256 id);
    event SetTokenURI(uint256 id, string tokenURI);
    event SetContractURI(string contractURI);
    event PermanentURI(string _value, uint256 indexed _id); //You can indicate to OpenSea that an NFT's metadata is no longer changeable by anyone

    bytes32 public constant GUARANTEE_ROLE = keccak256("GUARANTEE_ROLE");
    bytes32 public constant AUTH_ROLE = keccak256("AUTH_ROLE");

    // Gets {origin} of {id}
    function getOrigin(uint256 id) public view returns(uint256) {
        return data[id].origin;
    }
    // Gets {from} from {id}
    function getFrom(uint256 id) public view returns(uint) {
        return data[id].from;
    }

    // Gets {to} from {id}
    function getTo(uint256 id) public view returns(uint) {
        return data[id].to;
    }

    function getCreationFee(uint256 id) public view returns(uint256) {
        INash21Guarantee guaranteeInterface = INash21Guarantee(INash21Manager(manager).get(keccak256("GUARANTEE")));
        return guaranteeInterface.transformCurrency(getCurrency(id), getValue(id) * creationFee / 100 ether);
    }

    // Gets {releasePerBlock} from {id}
    function getReleasePerBlock(uint256 id) public view returns(uint256) {
        return data[id].releasePerBlock;
    }

    // Gets nextTokenId value of {id}
    function getValue(uint256 id) public view returns (uint256) {
        return data[id].releasePerBlock * getBlocks(id);
    }

    // Gets blocks of {id}
    function getBlocks(uint256 id) public view returns (uint) {
        return data[id].to - data[id].from;
    }

    function getCurrency(uint256 id) public view returns (bytes32) {
        return data[id].currency;
    }

    function authAndCreate(bytes32 hashId, address account, uint256 value, bytes32 currency, uint from, uint to) public onlyRole(AUTH_ROLE) returns(uint256) {
        uint256 id = _authorize(hashId, account, value, currency, from, to);
        _create(id);
        return id;
    }

    // Authorize an account to create {id} that represents a non-fungible token with claimable {releasePerBlock} tokens per block from block {from} to block {to}, returns the token id where JSON must be loaded
    function authorize(bytes32 hashId, address account, uint256 value, bytes32 currency, uint from, uint to) public onlyRole(AUTH_ROLE) returns(uint256) {
        return _authorize(hashId, account, value, currency, from, to);
    } 

    function _authorize(bytes32 hashId, address account, uint256 value, bytes32 currency, uint from, uint to) internal returns(uint256) {
        require(hashMap[hashId] == 0, "Nash21Factory: token already authorized");
        require(account != address(0), "Nash21Factory: cant authorize address zero");
        require(from < to, "Nash21Factory: ending block must be after starting block");
        require(value > 0, "Nash21Factory: value cant be null");
        uint id = nextTokenId;
        nextTokenId+=1;
        uint256 releasePerBlock = value / (to-from);
        data[id] = Data(id, releasePerBlock, currency, from, to);
        authorized[id] = account;
        hashMap[hashId] = id;
        emit Authorize(hashId, account, id, releasePerBlock, currency, from, to);
        return id;
    }
    
    // Unapproves the creation of {id}
    function unauthorizeOffchainSign(bytes32 hashId, address account, uint256 value, bytes32 currency, uint from, uint to, uint256 deadline) public onlyRole(AUTH_ROLE) {
        bytes32 structHash = keccak256(abi.encode(_N21_FACTORY_TYPEHASH, hashId, account, value, currency, from, to, deadline));
        unauthorized[structHash] = true;
        emit Unauthorize(hashId, 0, account, value, currency, from, to, deadline);
    }

    function unauthorize(bytes32 hashId) public onlyRole(AUTH_ROLE) {
        uint256 id = hashMap[hashId];
        address account = authorized[id];
        require(account != address(0), "Nash21Factory: token is unauthorized");
        authorized[id] = address(0);
        emit Unauthorize(hashId, id, account, getValue(id), getCurrency(id), getFrom(id), getTo(id), 0);
    }

    function create(uint256 id) public {
        address account = msg.sender;
        IERC20 tokenInterface = IERC20(INash21Manager(manager).get(keccak256("USDT")));
        address vault = INash21Manager(manager).get(keccak256("VAULT"));
        require(vault != address(0), "Nash21Factory: vault is not defined");
        uint256 feeRequired = getCreationFee(id);
        tokenInterface.transferFrom(account, vault, feeRequired);
        _create(id);
    }

    function createWithSignature(
        bytes32 hashId,
        address account,
        uint256 value,
        bytes32 currency,
        uint256 from,
        uint256 to,
        uint256 deadline, 
        bytes memory signature, 
        address signer
    ) public {
        require(hasRole(AUTH_ROLE, signer), "Nash21Factory: invalid role");
        require(block.timestamp <= deadline, "Nash21Factory: expired deadline");

        uint256 id = _authorize(hashId, account, value, currency, from, to);

        bytes32 structHash = keccak256(abi.encode(_N21_FACTORY_TYPEHASH, hashId, account, value, currency, from, to, deadline));
        bytes32 hash = _hashTypedDataV4(structHash);

        bool validation = SignatureCheckerUpgradeable.isValidSignatureNow(signer, hash, signature);
        require(validation, "Nash21Factory: invalid signature");

        require(!unauthorized[structHash], "Nash21Factory: unauthorized");
        _create(id);
    }

    // Creates {id} if it is authorized
    function _create(uint256 id) internal whenNotPaused {
        address account = authorized[id];
        require(account != address(0), "Nash21Factory: the creation of this token is not authorized");
        authorized[id] = address(0);
        _mint(account, id);
        emit Create(account, id);
    }

    // Checks if block_ is after block {from} and before block {to} of {id}, and also after current block
    function _checkBlock(uint256 id, uint block_) internal view {
        require(block_ > data[id].from, "Nash21Factory: block is before the start block");
        require(block_ < data[id].to, "Nash21Factory: block is after the end block");
    }

    // Splits {id} in two non-fungible tokens, burning {id} and minting (id1) and (id2)
    function split(address account, uint256 id, uint block_) public whenNotPaused onlyRole(GUARANTEE_ROLE) returns (uint256, uint256) {
        require(ownerOf(id) == account, "Nash21Factory: only owner can split this token");
        _checkBlock(id, block_);

        uint256 id1 = nextTokenId;
        uint256 id2 = nextTokenId + 1;

        nextTokenId += 2;

        data[id1] = Data(id, getReleasePerBlock(id), getCurrency(id), getFrom(id), block_);
        data[id2] = Data(id, getReleasePerBlock(id), getCurrency(id), block_, getTo(id));

        _burn(id);
        _mint(account, id1);
        _mint(account, id2);

        emit Burn(account, id);
        emit Create(account, id1);
        emit Create(account, id2);

        return (id1, id2);
    }

    function baseURI() public view returns (string memory) {
        return _baseURI();
    }

    function tokenURI(uint256 tokenId)
        public
        view
        override(ERC721Upgradeable, ERC721URIStorageUpgradeable)
        returns (string memory)
    {
        return super.tokenURI(tokenId);
    }

    function contractURI() public view returns (string memory) {
        return _contractUri;
    }

    // Sets base URI
    function setBaseURI(string memory uri) public onlyRole(DEFAULT_ADMIN_ROLE) {
        _setBaseURI(uri);
    }

    function setTokenURI(uint256 tokenId, string memory _tokenURI) public onlyRole(DEFAULT_ADMIN_ROLE) {
        _setTokenURI(tokenId, _tokenURI);
    }

    function setContractURI(string memory contractURI_) public onlyRole(DEFAULT_ADMIN_ROLE) {
        _setContractURI(contractURI_);
    }

    function _setBaseURI(string memory newBaseTokenURI) internal {
        _baseTokenURI = newBaseTokenURI;
    }

    function _setTokenURI(uint256 tokenId, string memory _tokenURI) internal override {
        super._setTokenURI(tokenId, _tokenURI);
        emit SetTokenURI(tokenId, _tokenURI);
    }

    function _setContractURI(string memory contractURI_) internal {
        _contractUri = contractURI_;
        emit SetContractURI(contractURI_);
    }

    function _setCreationFee(uint256 fee) internal {
        creationFee = fee;
    }

    function setCreationFee(uint256 fee) public onlyRole(DEFAULT_ADMIN_ROLE) {
        _setCreationFee(fee);
    }

    function setNextTokenId(uint256 newId) public onlyRole(DEFAULT_ADMIN_ROLE) {
        nextTokenId = newId;
    }

    // The following functions are overrides required by Solidity.

    function supportsInterface(bytes4 interfaceId)
        public
        view
        override(ERC721Upgradeable, ERC721EnumerableUpgradeable)
        returns (bool)
    {
        return super.supportsInterface(interfaceId);
    }

    function _burn(uint256 tokenId)
        internal
        override(ERC721Upgradeable, ERC721URIStorageUpgradeable)
    {
        super._burn(tokenId);
    }

    function _beforeTokenTransfer(address from, address to, uint256 tokenId)
        internal
        whenNotPaused
        override(ERC721Upgradeable, ERC721EnumerableUpgradeable)
    {
        super._beforeTokenTransfer(from, to, tokenId);
    }

    function initialize () public initializer {
        __ERC721_init("N21", "Nash21 ERC721");
        __ERC721URIStorage_init();
        __ERC721Enumerable_init();
        __EIP712_init("N21_FACTORY", "1");
        __AccessControlProxyPausable_init(msg.sender);

        _setBaseURI("https://ipfs.io/ipfs/");
        _setContractURI("https://ipfs.io/ipfs/QmPaBs7Kc8iUfS35VJNZY5dCmQPgx1sbNtWMEx1yoN7j3p");
        _setCreationFee(1 ether);
        nextTokenId = 1;
    }
}

