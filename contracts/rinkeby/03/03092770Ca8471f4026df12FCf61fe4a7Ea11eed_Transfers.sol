    function chargeLink(uint256 _amount) external onlyOwner {
        SafeERC20.safeTransferFrom(
            IERC20(LINK),
            msg.sender,
            address(this),
            _amount * 10**18
        );
        emit LinkTransfered(true, "Confirmed");
    }

    //this function works only on mainnet
    function withdrawLink(uint256 _amount) external onlyOwner {
        SafeERC20.safeTransfer(IERC20(LINK), owner, _amount * 10**18);
        emit LinkTransfered(true, "Confirmed");
    }

    function changeMainUrl(string calldata _newUrl) external onlyOwner {
        mainUrl = _newUrl;
    }

    function enablePause() external onlyOwner {
        pause = true;
    }

    function disablePause() external onlyOwner {
        pause = false;
    }

