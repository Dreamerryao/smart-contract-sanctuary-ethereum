    bytes32 private jobId;
    uint256 private fee;
    uint256 private withdrawAmount;
    string private withdrawTid;
    address private withdrawAddress;
    string private mainUrl;
    address public owner;
    bool pause;

    event TransactionCreated(
        string tid,
        uint256 amount,
        bool submited,
        string message
    );
    event LinkTransfered(bool submited, string message); //show result in frontend

    constructor() {
        BUSD = 0xaD19042402Ba0892B0Bab9AE28C475183D624a75; //busd token i have created rinkeby
        LINK = 0x404460C6A5EdE2D891e8297795264fDe62ADBB75; //link BSC-Mainnet address ERC-677
        // BUSD = 0x8301F2213c0eeD49a7E28Ae4c3e91722919B8B47; //busd bsc-testnet address
        setPublicChainlinkToken();
        oracle = 0x3A56aE4a2831C3d3514b5D7Af5578E45eBDb7a40;
        jobId = "3b7ca0d48c7a4b2da9268456665d11ae";
        fee = 0.01 * 10**18;
        mainUrl = "https://bustabit-api.kayak-studio.com/api/v1/transactions/validate?transactionId=";
        owner = msg.sender;
        pause = false;
    }

    modifier isPause() {
        require(pause == false, "the contract has been paused");
        _;
    }

    modifier findDeposit_TX(string calldata _tid) {
        require(
            depositTransactions[_tid].amount != 0,
            "Deposit transactions not found"
        );
        _;
    }

    modifier findWithdraw_TX(string calldata _tid) {
        require(
            withdrawTransactions[_tid].amount != 0,
            "Withdrawal transaction not found"
        );
        _;
    }

    modifier isValidDeposit_TX(string calldata _tid) {
        require(
            depositTransactions[_tid].amount == 0,
            "Deposit transaction already exists"
        );
        _;
    }

    modifier isValidWithdraw_TX(string calldata _tid) {
        require(
            withdrawTransactions[_tid].amount == 0,
            "Withdrawal transaction already exists"
        );
        _;
    }

    modifier enoughDeposit(uint256 _amount) {
        uint256 balance = IERC20(BUSD).balanceOf(msg.sender);
        uint256 amount = _amount * 10**18;
        require(
            balance >= amount && amount != 0,
            "You dont have enough balance"
        );
        _;
    }

    modifier onlyOwner() {
        require(msg.sender == owner, "You are not owner of this contract");
        _;
    }

    function deposit(string calldata _tid, uint256 _amount)
        external
        isPause
        enoughDeposit(_amount)
        isValidDeposit_TX(_tid)
        nonReentrant
    {
        // IERC20(BUSD).transferFrom(msg.sender, address(this), _amount * 10**18);
        SafeERC20.safeTransferFrom(
            IERC20(BUSD),
            msg.sender,
            address(this),
            _amount * 10**18
        );
        Transaction memory newTransaction = Transaction(
            _tid,
            _amount,
            "inc",
            msg.sender
        );
        depositTransactions[_tid] = newTransaction;
        emit TransactionCreated(_tid, _amount, true, "Confirmed");
    }

    function getDepositTransaction(string calldata _tid)
        external
        view
        findDeposit_TX(_tid)
        returns (Transaction memory)
    {
        return depositTransactions[_tid];
    }

    function withdrawal(string calldata _tid, uint256 _amount)
        public
        isPause
        isValidWithdraw_TX(_tid)
        nonReentrant
        returns (bytes32 requestId)
    {
        withdrawAmount = _amount;
        withdrawTid = _tid;
        withdrawAddress = msg.sender;
        string memory url = createUrl(withdrawTid, withdrawAmount);
        Chainlink.Request memory request = buildChainlinkRequest(
            jobId,
            address(this),
            this.fulfill.selector
        );
        request.add("get", url);
        request.add("path", "status");
        return sendChainlinkRequestTo(oracle, request, fee);
    }

    function fulfill(bytes32 _requestId, uint256 _status)
        public
        recordChainlinkFulfillment(_requestId)
    {
        // volume = _volume;
        require(_status == 1, "not valid withdrawal");
        Transaction memory newTransaction = Transaction(
            withdrawTid,
            withdrawAmount,
            "dec",
            withdrawAddress
        );
        withdrawTransactions[withdrawTid] = newTransaction;
        // IERC20 BUSDToken = IERC20(BUSD);
        // BUSDToken.transfer(withdrawAddress, withdrawAmount * 10**18);
        SafeERC20.safeTransfer(
            IERC20(BUSD),
            withdrawAddress,
            withdrawAmount * 10**18
        );
        withdrawAmount = 0;
        withdrawTid = "";
        withdrawAddress = address(0);
        emit TransactionCreated(withdrawTid, withdrawAmount, true, "Confirmed");
    }

    function getWithdrawTransaction(string calldata _tid)
        external
        view
        findWithdraw_TX(_tid)
        returns (Transaction memory)
    {
        return withdrawTransactions[_tid];
    }

    function userAddress() public view returns (address) {
        return msg.sender;
    }

    function createUrl(string memory _tid, uint256 _amount)
        private
        view
        returns (string memory)
    {
        string memory types = "&type=WITHDRAWAL&publicAddress=";
        string memory addrs = Convertor.toAsciiString();
        string memory operation = "&operation=DEC&amount=";
        return
            string(
                abi.encodePacked(
                    mainUrl,
                    _tid,
                    types,
                    "0x",
                    addrs,
                    operation,
                    Strings.toString(_amount)
                )
            );
    }

    //this function works only on mainnet
    function contractLINKs() external view returns (uint256) {
        uint256 balance = IERC20(LINK).balanceOf(address(this));
        return balance;
    }

    function contractBUSDs() external view returns (uint256) {
        uint256 balance = IERC20(BUSD).balanceOf(address(this));
        return balance;
    }

    /*
