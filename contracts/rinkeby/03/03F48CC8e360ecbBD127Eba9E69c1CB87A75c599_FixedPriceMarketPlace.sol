  event TokenCreated(
      address owner,
      uint256 tokenId,
      string tokenURI,
      uint256 royalty
  );
  event CompleteInitialization(address NFTokenContract, address FixedPriceMarketPlaceContract, address AuctionMarketPlaceContract);
