      royaltyPercentage = idToRoyaltyPercentage[tokenId];
      return royaltyPercentage;
  }

  function verifyMint(uint256 tokenId) public view returns(uint256 royaltyPercentage, string memory tokenURIString){
      royaltyPercentage = idToRoyaltyPercentage[tokenId];
      tokenURIString = tokenURI(tokenId);
      return (royaltyPercentage, tokenURIString);
  }

}

