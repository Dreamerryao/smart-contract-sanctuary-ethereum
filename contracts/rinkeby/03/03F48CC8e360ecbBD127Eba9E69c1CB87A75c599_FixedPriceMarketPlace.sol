      _tokenIds.increment();
      uint256 newItemId = _tokenIds.current();
      require(royaltyPercentage <= 50 && royaltyPercentage >= 0, 'invalid royalty');
      _mint(msg.sender, newItemId);
      _setTokenURI(newItemId, tokenURI);

      idToInitialOwner[_tokenIds.current()] = payable(msg.sender);
//--- TODO check royaltyPercentage correctness
      idToRoyaltyPercentage[_tokenIds.current()] = royaltyPercentage;
      emit TokenCreated(msg.sender, newItemId, tokenURI, royaltyPercentage);
      return newItemId;
  }

