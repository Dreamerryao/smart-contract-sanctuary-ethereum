/*
    Contract for burning Relic Punks.
    Each One-Dimensional Relic Punk burn is worth 1 point.
    Other Relic Punk burns are worth 2 points.
    Burn a total of 6 points in Punks to get a discount mint (0.33 ETH) for 1 Sneaks of Nature.

 */

contract PunksBurner is Ownable {
	using Strings for uint256;
	bool public paused = true;
    mapping(address => uint256) public pointCounter;
    address burnAddress = 0x0000000000000000000000000000000000000000;
    address public relicPunksContract;
    address public oneDimensionalContract;


    constructor ( address _relicPunksContract, address _oneDimensionalContract) {
        relicPunksContract = _relicPunksContract;
        oneDimensionalContract = _oneDimensionalContract;
    }

	function burnRelicPunk(uint256 punkId) public {
        RelicPunks relicPunk = RelicPunks(relicPunksContract);
        relicPunk.setApprovalForAll(address(this), true);
        relicPunk.safeTransferFrom(msg.sender, address(this), punkId);
        pointCounter[msg.sender] += 2;
	}

    function burnOneDimensional(uint256 oneDimensionalId) public {
        OneDimensional oneDim = OneDimensional(oneDimensionalContract);
        oneDim.setApprovalForAll(address(this), true);
        oneDim.safeTransferFrom(msg.sender, address(this), oneDimensionalId);
        pointCounter[msg.sender]++;
    }

    function checkAddressPoints(address user) public view returns (uint256) {
        return pointCounter[user];
    }

    function setRelicPunksContractAddress(address relicPunksContract_) public onlyOwner {
        relicPunksContract = relicPunksContract_;
	}

    function setOneDimensionalContractAddress(address oneDimensionalContract_) public onlyOwner {
        oneDimensionalContract = oneDimensionalContract_;
    }    
}