pragma solidity 0.8.4;

import "@openzeppelin/contracts/utils/math/SafeCast.sol";
import "@openzeppelin/contracts/token/ERC721/extensions/IERC721Enumerable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

contract ERC721Dividends is ReentrancyGuard {
  using SafeCast for uint256;
  using SafeCast for int256;

  uint256 private pointsPerShare;
  IERC721Enumerable public token;
  address private immutable MULTISIG;

  mapping(address => uint256) private balanceOf;
  mapping(address => int256) private pointsCorrection;
  mapping(address => uint256) private withdrawnFunds;

  constructor(address _multisig, IERC721Enumerable _token) {
    token = _token;
    MULTISIG = _multisig;
  }

  /**
   * *** PRIVATE ***
   *
   * @notice Distributes funds to token holders.
   * @param value The amount of ETH to be distributed.
   */
  function _distributeFunds(uint256 value) private {
    if (value > 0) {
      pointsPerShare = pointsPerShare + ((value * 1e18) / token.totalSupply());

      emit FundsDistributed(msg.sender, value);
    }
  }

  /**
   * *** ONLY ERC721Token ***
   *
   * @notice Create a new stake
   * @param owner The token holder
   */
  function createStake(address owner) public nonReentrant {
    require(msg.sender == address(token), "access denied");
    pointsCorrection[owner] = pointsCorrection[owner] - (pointsPerShare).toInt256();
  }

  /**
   * *** PRIVATE ***
   *
   * @notice Prepares funds for withdrawl
   * @dev emits `FundsWithdrawn` event
   * @return uint256 amount to be withdrawn
   */
  function _prepareWithdraw() private returns (uint256) {
    uint256 _withdrawableDividend = withdrawableFundsOf(msg.sender);

    withdrawnFunds[msg.sender] = withdrawnFunds[msg.sender] + _withdrawableDividend;

    emit FundsWithdrawn(msg.sender, _withdrawableDividend);

    return _withdrawableDividend;
  }

  /**
   * *** PUBLIC ***
   *
   * @notice Returns the amount of funds that `owner` can withdraw.
   * @param owner address of owner.
   * @return uint256 ETH value that `owner` can withdraw.
   */
  function withdrawableFundsOf(address owner) public view returns (uint256) {
    return accumulativeFundsOf(owner) - withdrawnFunds[owner];
  }

  /**
   * *** PUBLIC ***
   *
   * @notice Returns the ETH value that an address has withdrawn.
   * @param owner address of owner.
   * @return uint256 ETH value that `owner` has withdrawn.
   */
  function withdrawnFundsOf(address owner) public view returns (uint256) {
    return withdrawnFunds[owner];
  }

  /**
   * *** PUBLIC ***
   *
   * @notice View the amount of funds that an address has earned in total.
   * @dev accumulativeFundsOf(owner) = withdrawableFundsOf(owner) + withdrawnFundsOf(owner)
   * = (pointsPerShare * stakeOf(owner) + pointsCorrection[owner]) / pointsMultiplier
   * @param owner The address of a owner
   * @return amount of ETH that `owner` has earned in total.
   */
  function accumulativeFundsOf(address owner) public view returns (uint256) {
    uint256 tokenBalance = token.balanceOf(owner);
    if (tokenBalance == 0) return 0;
    return ((pointsPerShare * (tokenBalance)).toInt256() + pointsCorrection[owner]).toUint256() / 1e18;
  }

  /**
   * *** EXTERNAL ***
   *
   * @notice Withdraw funds
   */
  function withdrawFunds() external nonReentrant {
    uint256 withdrawableAmount = _prepareWithdraw();
    require(withdrawableAmount > 0, "no balance");

    (bool success, ) = payable(msg.sender).call{ value: withdrawableAmount }("");
    require(success, "unable to send value");
  }

  /**
   * *** EXTERNAL ***
   *
   * @notice Default receive function distibutes all ETH to stake holders.
   */
  receive() external payable {
    if (token.totalSupply() > 0) {
      _distributeFunds(msg.value);
    } else {
      (bool success, ) = MULTISIG.call{ value: msg.value }("");
      require(success, "treasury: send error");
    }
  }

  /**
   * @dev Emits when new funds are distributed
   * @param by the address of the sender who distributed funds
   * @param fundsDistributed the amount of funds received for distribution
   */
  event FundsDistributed(address indexed by, uint256 fundsDistributed);

  /**
   * @dev Emits when distributed funds are withdrawn by a token holder.
   * @param by the address of the receiver of funds
   * @param fundsWithdrawn the amount of funds that were withdrawn
   */
  event FundsWithdrawn(address indexed by, uint256 fundsWithdrawn);
}

