import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

/**
 * @notice implementation of the DEFE token contract
 * @author DEFE
 */
contract DefeVault is ReentrancyGuard, Ownable {
    mapping(address => bool) public signers;
    mapping(uint256 => bool) public signRecord;
    event CLAIM_LOG(address sender, uint256 nonce, uint256 amount);
    event UPDATE_SIGNER_LOG(address indexed signer, bool isSigner);
    address public defe;

    modifier onlySigner() {
        require(signers[msg.sender], "caller is not the signer");
        _;
    }

    constructor(address defeAdr) {
        defe = defeAdr;
    }

    function setDefe(address defeAdr) external onlyOwner {
        defe = defeAdr;
    }

    function setSigner(address[] calldata _signers, bool[] calldata _isSigners)
        external
        onlyOwner
    {
        require(
            _signers.length > 0 && _isSigners.length > 0,
            "_signers array is empty"
        );
        require(
            _signers.length == _isSigners.length,
            "array are not the same length"
        );
        for (uint256 i = 0; i < _signers.length; i++) {
            signers[_signers[i]] = _isSigners[i];
            emit UPDATE_SIGNER_LOG(_signers[i], _isSigners[i]);
        }
    }

    function claimReward(bytes calldata message, bytes calldata sign)
        external
        nonReentrant
    {
        checkSign(message, sign);
        (
            address sender,
            address verifyAddress,
            uint256 amount,
            uint256 nonce,
            uint256 expiredTime
        ) = abi.decode(message, (address, address, uint256, uint256, uint256));
        require(address(this) == verifyAddress, "verifyAddress illegal");
        require(signRecord[nonce] == false, "sign is used");
        require(block.timestamp <= expiredTime, "time illegal");
        require(msg.sender == sender, "sender is error");

        IERC20(defe).transfer(sender, amount);
        signRecord[nonce] = true;

        emit CLAIM_LOG(sender, nonce, amount);
    }

    function checkSign(bytes memory message, bytes memory signature)
        public
        view
        returns (bool)
    {
        bytes32 hash = keccak256(message);
        address signer = ECDSA.recover(hash, signature);
        require(signers[signer], "checkSign:signer not exist");
        return true;
    }

    function turnOutToken(address token, uint256 amount) public onlyOwner {
        IERC20(token).transfer(msg.sender, amount);
    }
}

