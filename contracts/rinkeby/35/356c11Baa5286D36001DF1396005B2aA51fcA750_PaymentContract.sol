pragma solidity ^0.8.4;


contract PaymentContract {

    using SafeMath for uint;

    mapping(address => uint256) balances;

    event PaymentReceived(address[] recipients, uint16[] shares);

    function pay(address[] calldata recipients, uint16[] calldata shares) external payable {
        require(msg.value > 0, "Cannot process a zero value tx");
        require(recipients.length == shares.length, "Recipient count must match shares count");

        emit PaymentReceived(recipients, shares);

        uint totalShares = 0;
        for (uint x = 0; x < shares.length; x++) {
            totalShares = totalShares.add(shares[x]);
        }

        uint shareUnit = msg.value.div(totalShares);

        for (uint x = 0; x < recipients.length; x++) {
            uint shareAmount = shareUnit.mul(shares[x]);
            balances[recipients[x]] = balances[recipients[x]].add(shareAmount);
        }
    }

    function withdraw() external payable {
        require(balances[msg.sender] > 0, "You have no available balance to withdraw");

        payable(msg.sender).transfer(balances[msg.sender]);

        balances[msg.sender] = 0;
    }
}