        idToFixedSale[_saleId] = _fixedSale;

        fixedSaleCounter.increment();

        // emit event for FixedSaleCreated
        emit FixedSaleCreated(
            _saleId,
            _fixedSale.isERC721,
            _fixedSale.tokenId,
            _fixedSale.nftContract,
            _fixedSale.fixedPrice,
            _fixedSale.startedAt,
            _fixedSale.seller,
            _fixedSale.amount
