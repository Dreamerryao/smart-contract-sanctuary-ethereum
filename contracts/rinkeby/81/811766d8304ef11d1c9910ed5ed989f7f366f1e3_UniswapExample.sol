pragma solidity 0.8.0;

import "https://github.com/Uniswap/uniswap-v2-periphery/blob/master/contracts/interfaces/IUniswapV2Router01.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

contract UniswapExample {
  address internal constant UNISWAP_ROUTER_ADDRESS = 0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D;
  address internal constant UNISWAP_APPROVE_ADDRESS = 0xE592427A0AEce92De3Edee1F18E0157C05861564;
  address internal constant DAI = 0x5592EC0cfb4dbc12D3aB100b257153436a1f0FEa;

  IUniswapV2Router01 public uniswapRouter;
  IERC20 public daiContract;
  address private dai = 0x5592EC0cfb4dbc12D3aB100b257153436a1f0FEa;
  address private tokenOut = 0x1f9840a85d5aF5bf1D1762F925BDADdC4201F984;

  address private wallet = 0x88832EA5997BD53fB6a134a7F4CfD959cc42Aded;

  constructor() {
    uniswapRouter = IUniswapV2Router01(UNISWAP_ROUTER_ADDRESS);
    daiContract = IERC20(DAI);
  }

  function approve() public {
    daiContract.approve(UNISWAP_APPROVE_ADDRESS, 0xffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff);  
  }

  function swap() public {
    uint deadline = block.timestamp + 60; // using 'now' for convenience, for mainnet pass deadline from frontend!
    uint amountIn = 10000;
    uint[] memory amounts = uniswapRouter.getAmountsOut(amountIn, getPathForETHtoDAI());
    // uint amountOutMin = (amounts[1] / 10) * 9;
    uniswapRouter.swapExactTokensForTokens(amountIn, amounts[1], getPathForETHtoDAI(), address(this), deadline);
  }

  function getPathForETHtoDAI() private view returns (address[] memory) {
    address[] memory path = new address[](2);
    path[0] = dai;
    path[1] = tokenOut;
    
    return path;
  }
  
  // important to receive ETH
  receive() payable external {}
}

