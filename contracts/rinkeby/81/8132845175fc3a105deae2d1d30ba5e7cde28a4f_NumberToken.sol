pragma solidity ^0.8.13;

import "solmate/tokens/ERC721.sol";
import "openzeppelin-contracts/contracts/access/Ownable.sol";
import "openzeppelin-contracts/contracts/utils/Strings.sol";
import "openzeppelin-contracts/contracts/utils/Base64.sol";

contract NumberToken is ERC721, Ownable {
    uint256 public totalSupply;
    string constant start = '<svg xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMinYMin meet" viewBox="0 0 350 350"><style>text{fill: white; white-space:pre; font-family: Courier New; font-size: xxx-large;}</style><rect width="100%" height="100%" fill="black" /><text x="100" y="140">';
    string constant end = '</text></svg>';

    constructor() ERC721("NumberToken", "NUM") {}

    function mint(uint quantity) public {
        for (uint i = 0; i < quantity; i++)
            _safeMint(msg.sender, totalSupply + i);
        totalSupply += quantity;
    }

    function tokenURI(uint256 id) public pure override returns (string memory) {
        string memory sid = Strings.toString(id);
        string memory out = string.concat(start, sid);
        out = string.concat(out, end);
        bytes memory dataURI = abi.encodePacked(
            '{',
                '"name": "NumberToken #', sid, '"',
                '"image": "data:image/svg+xml;base64,', Base64.encode(bytes(out)), '"',
            '}'
        );
        return string(
            abi.encodePacked(
                "data:application/json;base64,",
                Base64.encode(dataURI)
            )
        );
    }

}

