pragma solidity ^0.8.4;

import '@openzeppelin/contracts/utils/math/Math.sol';
import '@openzeppelin/contracts/utils/math/SafeMath.sol';
import '@openzeppelin/contracts/token/ERC721/utils/ERC721Holder.sol';
import '@openzeppelin/contracts/utils/structs/EnumerableSet.sol';
import './2.ShunaV2-Staking_Admin.sol';

contract ShunaV2_Staking is ERC721Holder, ShunaV2Staking_Admin {
    using Math for uint256;
    using SafeMath for uint256;
    using EnumerableSet for EnumerableSet.UintSet;

    constructor(
        address _nftAddr,
        address _rwdAddr,
        uint256[5] memory _nftRwdPerSec,
        uint256 _stakingPeriod
    ) {
        nftAddr = _nftAddr;
        rwdAddr = _rwdAddr;
        nftRwdPerSec = _nftRwdPerSec;
        stakingEndTime = block.timestamp + _stakingPeriod;
    }

    function stakeNFTs(uint256[] memory _tokenIds) external {
        require(block.timestamp < stakingEndTime, 'Staking period is ended');

        for (uint256 i = 0; i < _tokenIds.length; i++) {
            uint256 _currId = _tokenIds[i];

            // update TokenInfo, UserInfo and allStakedTokendIds
            TokenInfoTable[_currId].tokenOwner = msg.sender;
            TokenInfoTable[_currId].lastCalcTime = block.timestamp;
            UserInfoTable[msg.sender].stakedNftsSet.add(_currId);
            allStakedTokenIds.add(_currId);

            // transfer nft from user-wallet to nftStake-contract
            IERC721(nftAddr).safeTransferFrom(
                msg.sender,
                address(this),
                _currId
            );
        }
    }

    event RewardsClaimed(address rewardRecipient, uint256 _rwdAmtClaimed);

    function claimReward(uint256[] calldata _tokenIds) public {
        uint256 _totalRwd;
        for (uint256 i = 0; i < _tokenIds.length; i++) {
            uint256 _currId = _tokenIds[i];
            require(
                TokenInfoTable[_currId].tokenOwner == msg.sender,
                'You are not owner of the NFT'
            );

            uint256 _currRwd = currentRewardOf(_currId);
            _totalRwd = _totalRwd.add(_currRwd);
            TokenInfoTable[_currId].rwdsClaimed = TokenInfoTable[_currId]
                .rwdsClaimed
                .add(_currRwd);
            TokenInfoTable[_currId].lastCalcTime = block.timestamp;
        }
        IERC20(rwdAddr).transfer(msg.sender, _totalRwd);
        emit RewardsClaimed(msg.sender, _totalRwd);
    }

    function _unstakeSingleNFT(uint256 _currId) private {
        // make future rewards zero, remove token-ownership
        TokenInfoTable[_currId].lastCalcTime = 0; // 0 for nfts which are not staked
        TokenInfoTable[_currId].tokenOwner = address(0); // ZERO_ADDR for nfts which are not staked

        // remove nft from UserToken-list and allStakedNFTs-list
        UserInfoTable[msg.sender].stakedNftsSet.remove(_currId);
        allStakedTokenIds.remove(_currId);

        // transfer nft to owner
        IERC721(nftAddr).safeTransferFrom(address(this), msg.sender, _currId);
    }

    function unstakeNFTs(uint256[] calldata _tokenIds) external {
        // transfer remaining rewards of user generated by nft
        claimReward(_tokenIds);

        // transfer user NFTs to his adress
        for (uint256 i = 0; i < _tokenIds.length; i++) {
            uint256 _currId = _tokenIds[i];
            require(
                TokenInfoTable[_currId].tokenOwner == msg.sender,
                'You are not owner of the NFT'
            );

            _unstakeSingleNFT(_currId);
        }
    }
}

