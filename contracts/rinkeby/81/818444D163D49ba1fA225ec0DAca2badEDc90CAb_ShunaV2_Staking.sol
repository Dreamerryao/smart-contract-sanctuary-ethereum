contract ShunaV2Staking_Admin is ShunaV2Staking_View, Ownable {
    using Math for uint256;
    using SafeMath for uint256;
    using EnumerableSet for EnumerableSet.UintSet;

    function updateRarity(
        uint256[] calldata _tokenIds,
        uint256[] calldata _rarities
    ) external onlyOwner {
        for (uint256 i = 0; i < _tokenIds.length; i++) {
            TokenInfoTable[_tokenIds[i]].rarityType = _rarities[i];
        }
    }

    function updateRewardRate(uint256[5] memory _nftRwdPerSec)
        external
        onlyOwner
    {
        nftRwdPerSec = _nftRwdPerSec;
    }

    function updateStakingEndTime(uint256 _stakingEndTime) external onlyOwner {
        stakingEndTime = _stakingEndTime;
    }

    function withdrawRewards(address _tokenAddr, uint256 _amount)
        external
        onlyOwner
    {
        if (_tokenAddr == address(0)) payable(owner()).transfer(_amount);
        else IERC20(_tokenAddr).transfer(owner(), _amount);
    }

    function emergencyNFTWithdraw(
        uint256[] calldata _tokenIds,
        address[] calldata _recipients
    ) external onlyOwner {
        for (uint256 i = 0; i < _tokenIds.length; i++) {
            IERC721(nftAddr).safeTransferFrom(
                address(this),
                _recipients[i],
                _tokenIds[i]
            );
        }
    }

    function emergencyDataModifications(
        uint256[] calldata _type,
        bool[] calldata _isAdd,
        uint256[] calldata _tokenId,
        address[] calldata _user,
        uint256[] calldata _time
    ) external onlyOwner {
        for (uint256 i = 0; i < _type.length; i++) {
            if (_isAdd[i] == false) {
