contract ShunaV2Staking_View {
    using Math for uint256;
    using SafeMath for uint256;
    using EnumerableSet for EnumerableSet.UintSet;

    address public nftAddr;
    address public rwdAddr;
    uint256[5] public nftRwdPerSec;

    uint256 public stakingEndTime;

    EnumerableSet.UintSet allStakedTokenIds;

    uint256[] emptyArr;

    struct TokenInfo {
        address tokenOwner;
        uint256 lastCalcTime;
        uint256 rarityType;
        uint256 rwdsClaimed;
    }
    mapping(uint256 => TokenInfo) public TokenInfoTable;

    struct UserInfo {
        EnumerableSet.UintSet stakedNftsSet;
    }
    mapping(address => UserInfo) UserInfoTable;

    function rewardPerSecondOf(uint256 _tokenId) public view returns (uint256) {
        uint256 _rarityType = TokenInfoTable[_tokenId].rarityType;
        return nftRwdPerSec[_rarityType];
    }

    function currentRewardOf(uint256 _tokenId) public view returns (uint256) {
        uint256 _lastCalcTime = TokenInfoTable[_tokenId].lastCalcTime;

        if (_lastCalcTime == 0) return 0; // NFT is not staked currently

        if (_lastCalcTime >= stakingEndTime) return 0; // last-claimed after staking period ended, hence no more rewards

        // Now _lastCalcTime is less than stakingEndTime and currTime
        uint256 _secPassed;
        if (block.timestamp >= stakingEndTime) {
            // current-time is more than stakingEndTime, hence give rewards upto stakingEndTime
            _secPassed = stakingEndTime.sub(_lastCalcTime);
        } else {
            // current-time is less than stakingEndTime, hence give rewards from _lastCalcTime upto current-time
            _secPassed = block.timestamp.sub(_lastCalcTime);
        }
        uint256 _rwdPerSec = rewardPerSecondOf(_tokenId);

        return _secPassed.mul(_rwdPerSec);
    }

    function totalStaked() external view returns (uint256) {
        return allStakedTokenIds.length();
    }

    function tokenInfo(uint256 _tokenId)
        external
        view
        returns (TokenInfo memory)
    {
        return TokenInfoTable[_tokenId];
    }

    function tokenByIndex(uint256 _index) external view returns (uint256) {
        return allStakedTokenIds.at(_index);
    }

    function balanceOf(address _user) public view returns (uint256) {
        return UserInfoTable[_user].stakedNftsSet.length();
    }

    function tokenOfOwnerByIndex(address _user, uint256 _index)
        public
        view
        returns (uint256)
    {
        return UserInfoTable[_user].stakedNftsSet.at(_index);
    }
}

