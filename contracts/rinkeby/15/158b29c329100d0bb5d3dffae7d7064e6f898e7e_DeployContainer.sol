contract MintProxy is Ownable {
    bytes32 public allowListMerkleRoot;

    struct ContractFee {
        address tokenAddress;
        uint16 feeBasisPoints;
    }

    error ContractNotAllowListed();
    error FeeBasisTooLarge();
    error IncorrectEtherAmount();
    error MintFailed();
    error ReceivedEther();

    ///@notice Checks if contract address is included in allow list, revert otherwise
    ///@param _contractFee packed struct of address and fee basis poiints
    ///@param _proof Merkle proof
    modifier onlyAllowListed(
        ContractFee calldata _contractFee,
        bytes32[] calldata _proof
    ) {
        if (!isAllowListed(_contractFee, _proof)) {
            revert ContractNotAllowListed();
        }
        _;
    }

    ///@notice Checks if contract address is included in allow list, revert otherwise
    ///@param _contractFee packed struct of address and fee basis poiints
    ///@param _to address to mint token to
    ///@param _tokenOrOptionId token or option id to mint
    ///@param _proof Merkle proof for ContractFee
    function mint(
        ContractFee calldata _contractFee,
        address _to,
        uint256 _tokenOrOptionId,
        bytes32[] calldata _proof
    ) external payable onlyAllowListed(_contractFee, _proof) returns (bool) {
        ProxyMintable mintable = ProxyMintable(_contractFee.tokenAddress);
        // look up mintPrice from contract
        ProxyMintable.MintPrice memory mintPrice = mintable.mintPrice(
            _tokenOrOptionId
        );
        uint256 fee;
        // uint16s will not overflow uint256
        unchecked {
            fee = (_contractFee.feeBasisPoints * mintPrice.mintPrice) / 10000;
        }
        if (fee > mintPrice.mintPrice) {
            revert FeeBasisTooLarge();
        }
        uint256 amountToForward = 0;
        if (mintPrice.tokenAddress == address(0)) {
            // 0 address means regular ether
            if (msg.value != mintPrice.mintPrice) {
                revert IncorrectEtherAmount();
            }
            // would have reverted if fee > msg.value
            unchecked {
                amountToForward = msg.value - fee;
            }
        } else {
            if (msg.value != 0) {
                revert ReceivedEther();
            }

            ERC20 token = ERC20(mintPrice.tokenAddress);
            // assumes user has granted allowance to this contract
            SafeTransferLib.safeTransferFrom(
                token,
                msg.sender,
                address(this),
                fee
            );
        }

        bool success = mintable.proxyMint{value: amountToForward}(
            _to,
            _tokenOrOptionId
        );

        if (!success) {
            revert MintFailed();
        }

        return success;
    }

    ///@notice withdraw eth balance to owner
    function withdraw() external onlyOwner {
        SafeTransferLib.safeTransferETH(owner(), address(this).balance);
    }

    ///@notice withdraw ERC20 balance to owner
