    ///@param _contractFee struct of contract address plus fee basis points
    ///@param _proof Merkle proof
    ///@return boolean isAllowListed
    function isAllowListed(
        ContractFee calldata _contractFee,
        bytes32[] calldata _proof
    ) public view returns (bool) {
        return
            MerkleProof.verify(
                _proof,
                allowListMerkleRoot,
                keccak256(abi.encode(_contractFee))
            );
    }

    function setAllowListMerkleRoot(bytes32 _merkleRoot) external onlyOwner {
        allowListMerkleRoot = _merkleRoot;
    }

    receive() external payable {
        revert ReceivedEther();
    }
}

