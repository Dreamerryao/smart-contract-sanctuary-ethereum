pragma solidity ^0.8.0;


import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

import "./IERC1400TokensRecipient.sol";
import "./ERC1820Client.sol";


contract ExchangeERC1400 is IERC1400TokensRecipient, ERC1820Client, Ownable {
    using SafeMath for uint256;

    IERC20 public _token1;
    IERC20 public _token2;

    bool public _paused;
    uint256 public _conversionRatio;

    IERC1820Registry public _registry
        = IERC1820Registry(0x1820a4B7618BdE71Dce8cdc73aAB6C95905faD24);
    

    string constant internal ERC1400_TOKENS_RECIPIENT = "ERC1400TokensRecipient";

    uint256 private _balanceToken1;
    uint256 private _balanceToken2;

    event Swap(address token1, address token2, uint256 amount);

    constructor(
        address token1,
        address token2
    ) {      
          
        ERC1820Client.setInterfaceImplementation(ERC1400_TOKENS_RECIPIENT, address(this));
        _conversionRatio = 10**10;
        _paused = true;
        _token1 = IERC20(token1);
        _token2 = IERC20(token2);
    }

    function getToken1() external view returns(uint256) {
        return _balanceToken1;
    }

    function getToken2() external view returns(uint256) {
        return _balanceToken2;
    }

    function setPaused(bool boolValue) public onlyOwner {
        _paused = boolValue;
    }

    function setConversionRatio(uint256 ratio) public onlyOwner {
        _conversionRatio = ratio;
    }

    function tokensReceived(
        bytes calldata /*payload*/,
        bytes32 /*partition*/,
        address /*operator*/,
        address from,
        address /*to*/,
        uint256 amount,
        bytes calldata /*userData*/,
        bytes calldata /*operatorData*/
    ) external override {
        require(msg.sender == address(_token1) || msg.sender == address(_token2), "Invalid token");

        if (msg.sender == address(_token1)) {
            _balanceToken1.add(amount);
        }
        else if (msg.sender == address(_token2)) {
            _balanceToken2.add(amount);
        }
        

        if (!_paused) {
            if (msg.sender == address(_token1)) {

                uint256 tokenAmount = amount.mul(_conversionRatio).div(10**10);
                require(_balanceToken2 >= tokenAmount, "Not enough token 2 to do a swap");
                _balanceToken2.sub(tokenAmount);
                _token2.transfer(from, tokenAmount);
                emit Swap(address(_token1),address(_token2), tokenAmount);
            }
            else if (msg.sender == address(_token2)) {

                uint256 tokenAmount = amount.div(_conversionRatio).div(10**10);
                require(_balanceToken1 >= tokenAmount, "Not enough token 1 to do a swap");
                _balanceToken1.sub(tokenAmount);
                _token1.transfer(from, tokenAmount);
                emit Swap(address(_token2),address(_token1), tokenAmount);
            }
        }
    }
}

