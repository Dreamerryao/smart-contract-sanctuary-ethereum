            // first stage
            _tokenPrices[tokenId] = (sellingPrice * 200) / 94;
        } else if (sellingPrice < secondStepLimit) {
            // second stage
            _tokenPrices[tokenId] = (sellingPrice * 120) / 94;
        } else {
            // third stage
            _tokenPrices[tokenId] = (sellingPrice * 115) / 94;
        }

        _transfer(oldOwner, newOwner, tokenId);

        // Pay previous tokenOwner if owner is not contract
        // Fix: handle contracts that won't accept ether
