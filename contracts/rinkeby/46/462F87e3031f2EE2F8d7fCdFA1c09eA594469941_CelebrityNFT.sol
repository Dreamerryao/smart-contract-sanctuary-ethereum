                emit FundsInEscrow(
                    tokenId, // Sold Token ID
                    oldOwner, // Funds owner
                    payment // OnHold mount
                );
            }
        }

        emit TokenSold(
            tokenId,
            sellingPrice,
            _tokenPrices[tokenId],
            oldOwner,
            newOwner
        );

        if (purchaseExcess > 0) {
            payable(_msgSender()).transfer(purchaseExcess);
        }
