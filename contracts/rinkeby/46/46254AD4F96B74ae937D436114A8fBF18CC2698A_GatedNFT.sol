pragma solidity ^0.8.6;

import "@openzeppelin/contracts/token/ERC721/ERC721.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721Receiver.sol";
import "../Flashmint.sol";

contract GatedNFT is ERC721 {
    address gatingNFT;
    uint256 totalSupply;
    constructor(address _gatingNFT) ERC721("Gated NFT", "GATED") {
        gatingNFT = _gatingNFT;
    }
    function mint() external {
        require(IERC721(gatingNFT).balanceOf(msg.sender) > 0, "Don't own gating NFT");
        _safeMint(msg.sender, totalSupply++);
    }
    function mintWithArg(uint256 _magicNum) external {
        require(IERC721(gatingNFT).balanceOf(msg.sender) > 0, "Don't own gating NFT");
        require(_magicNum == 0, "wrong arbitrary num");
        _safeMint(msg.sender, totalSupply++);
    }

    function mintWithoutSending() external {
        require(IERC721(gatingNFT).balanceOf(msg.sender) > 0, "Dont own");
        IERC721Receiver(msg.sender).onERC721Received(
            address(this), address(this), 0, ""
        );
    }

    function mintReentrant() external {
        require(IERC721(gatingNFT).balanceOf(msg.sender) > 0, "dont own");
        bytes memory reentrantData = abi.encodeWithSignature("mintReentrant()");
        Flashmint(payable(msg.sender)).lendToMint(
            address(this), 
            reentrantData
        );
    }

    function mintPaid() external payable {
        require(IERC721(gatingNFT).balanceOf(msg.sender) > 0, "dont own");
        require(msg.value == 0.1 ether, "underpaid");
        _safeMint(msg.sender, totalSupply++);
    }

    function _baseURI() internal view virtual override returns (string memory) {
        return "http://flashmint.vercel.app/api/gated/";
    }
}

