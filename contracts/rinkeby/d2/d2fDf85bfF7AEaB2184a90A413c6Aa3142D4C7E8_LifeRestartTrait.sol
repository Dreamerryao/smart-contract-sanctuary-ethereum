contract LifeRestartTrait is ERC721, Ownable {
    using Counters for Counters.Counter;
    using Address for address;
    Counters.Counter private _tokenId;

    mapping(uint256 => uint256) public rarities;

    address public lifeRestartCharaterAddress;
    address public tokenAddress;
    address public raritySetter;

    uint256 public mintPrice = 33 * 1e18;
    uint256 public batchMintPrice = 299 * 1e18;
    uint256 public upgradePrice = 2000 * 1e18;
    uint256 public composePrice = 2000 * 1e18;

    event Upgraded(uint256[] tokenIds, uint256 mintedTokenId);

    event Composed(uint256[] tokenIds, uint256 mintedTokenId);

    event Charged(address player, uint256 amount);

    constructor(address setter, address token)
        ERC721("LifeRestartTrait", "LRT")
    {
        raritySetter = setter;
        tokenAddress = token;
    }

    function setLifeRestartCharacterAddress(address character)
        external
        onlyOwner
    {
        lifeRestartCharaterAddress = character;
    }

    function setRaritySetter(address setter) external onlyOwner {
        raritySetter = setter;
    }

    function SetRarity(
        uint256[] calldata tokenIds,
        uint256[] calldata _rarities
    ) external {
        require(msg.sender == raritySetter, "not setter");
        for (uint256 i = 0; i < tokenIds.length; i++) {
            rarities[tokenIds[i]] = _rarities[i];
        }
    }

    function setToken(address _token) external onlyOwner {
        tokenAddress = _token;
    }

    function charge(uint256 amount) external {
        IERC20(tokenAddress).transferFrom(msg.sender, address(this), amount);
        emit Charged(msg.sender, amount);
    }

    
    
    function mint(uint256 size) external {
        for (uint256 i = 0; i < size; i++) {
            uint256 tokenId = _tokenId.current();
            _mint(msg.sender, tokenId);
            _tokenId.increment();
        }

        IERC20(tokenAddress).transferFrom(
            msg.sender,
            address(this),
            mintPrice * size
        );

        
    }

    function batchMint(uint256 size) public {
        for (uint256 i = 0; i < size; i++) {
            for (uint256 j = 0; i < 10; j++) {
                uint256 tokenId = _tokenId.current();
                _mint(msg.sender, tokenId);
                _tokenId.increment();
            }
        }
        IERC20(tokenAddress).transferFrom(
            msg.sender,
            address(this),
            batchMintPrice * size
        );
    }

    function upgrade(uint256[] calldata nfts) external {
        require(nfts.length == 5, "not enough nfts");
        uint256 rarity = rarities[nfts[0]];
        for (uint256 i = 0; i < nfts.length; i++) {
            require(rarities[nfts[i]] == rarity, "rarity does not match");
            _burn(nfts[i]);
        }
        require(rarity < 3, "already max");
        IERC20(tokenAddress).transferFrom(
            msg.sender,
            address(this),
            upgradePrice
        );
        uint256 tokenId = _tokenId.current();
        _mint(msg.sender, tokenId);
        _tokenId.increment();
        rarities[tokenId] = rarity + 1;
        emit Upgraded({tokenIds: nfts, mintedTokenId: tokenId});
    }

    function compose(uint256[] calldata nfts) external {
        require(nfts.length == 4, "not enough nfts");
        for (uint256 i = 0; i < nfts.length; i++) {
            require(rarities[nfts[i]] == i, "not right rarity");
            _burn(nfts[i]);
        }
        IERC20(tokenAddress).transferFrom(
            msg.sender,
            address(this),
            composePrice
        );
        uint256 tokenId = ILifeRestartCharacter(lifeRestartCharaterAddress)
            .mint();
        emit Composed({tokenIds: nfts, mintedTokenId: tokenId});
    }

    function getNFTs(address player) public view returns (uint256[] memory) {
        uint256[] memory nfts = new uint256[](balanceOf(player));
        uint256 j = 0;
        for (uint256 i = 0; i < _tokenId.current(); i++) {
            if (ownerOf(i) == player) {
                nfts[j] = i;
                j++;
            }
        }
        return nfts;
    }

    
    function withdraw() external onlyOwner {
        payable(address(msg.sender)).transfer(address(this).balance);
    }

    
    function withdrawToken(address tokenAddr) external onlyOwner {
        IERC20 token = IERC20(tokenAddr);
        uint256 balance = token.balanceOf(address(this));
        token.transfer(msg.sender, balance);
    }

    function withdrawTokenTo(address to, uint256 amount) external {
        require(msg.sender == raritySetter, "not operator");
        IERC20 token = IERC20(tokenAddress);
        token.transfer(to, amount);
    }
}