        external
        onlyOwner
    {
        whitelistSigningKey = newSigningKey;
    }

    modifier requiresWhitelist(bytes calldata signature) {
        require(whitelistSigningKey != address(0), "whitelist not enabled");
        require(
            getEIP712RecoverAddress(signature) == whitelistSigningKey,
            "Not whitelisted"
