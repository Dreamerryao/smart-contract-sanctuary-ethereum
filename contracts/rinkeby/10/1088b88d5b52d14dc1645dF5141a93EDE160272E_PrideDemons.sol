import "erc721a/contracts/ERC721A.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/finance/PaymentSplitter.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/utils/Strings.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@chainlink/contracts/src/v0.8/interfaces/VRFCoordinatorV2Interface.sol";
import "@chainlink/contracts/src/v0.8/VRFConsumerBaseV2.sol";
import "./lib/BlockBasedSale.sol";
import "./lib/EIP712Whitelisting.sol";

contract PrideDemons is
    Ownable,
    ERC721A,
    EIP712Whitelisting,
    VRFConsumerBaseV2,
    BlockBasedSale,
    ReentrancyGuard
{
    using Address for address;

    event PermanentMetadataId(uint256 metaId, uint256 indexed tokenId);
    event RandomseedRequested(uint256 timestamp, uint256 reqId);
    event RandomseedFulfilment(
        uint256 timestamp,
        uint256 requestId,
        uint256 randWords
    );

    PaymentSplitter private _splitter;

    struct chainlinkParams {
        address coordinator;
        bytes32 keyHash;
        uint32 subId;
    }

    struct revenueShareParams {
        address[] payees;
        uint256[] shares;
    }

    mapping(address => bool) private _airdropAllowed;
    mapping(address => uint256) private _privateSaleClaimed;
    mapping(address => uint256) private _publicSaleClaimed;
    mapping(address => uint256) private _nextTxAllowBlock;

    string public _defaultURI;
    string public _tokenBaseURI;

    VRFCoordinatorV2Interface private COORDINATOR;
    bytes32 public keyHash;
    uint64 private s_subId;
    uint32 private vrfGasLimit = 100000;
    uint256 private s_reqId;
    uint256 private s_randWords;
    uint256 public seed = 0;
    bool public randomSeedRecieved = false;
    bool public revealed = false;
    bool public freezed = false;
    uint256 public vaultReserve = 0;
    uint256[] private _metadataId;

    constructor(
        uint256 _privateSalePrice,
        uint256 _publicSalePrice,
        uint256 _priceFactor,
        uint256 _lowerBoundPrice,
        uint256 _vaultReserve,
        string memory name,
        string memory symbol,
        uint256 _maxSupply,
        uint256 _maxReserve,
        chainlinkParams memory chainlink,
        revenueShareParams memory revenueShare
    )
        ERC721A(name, symbol)
        VRFConsumerBaseV2(chainlink.coordinator)
    {
        _splitter = new PaymentSplitter(
            revenueShare.payees,
            revenueShare.shares
        );
        COORDINATOR = VRFCoordinatorV2Interface(chainlink.coordinator);
        keyHash = chainlink.keyHash;
        s_subId = chainlink.subId;
        maxSupply = _maxSupply;
        maxReserve = _maxReserve;
        publicSalePrice = _publicSalePrice;
        privateSalePrice = _privateSalePrice;
        priceFactor = _priceFactor;
        lowerBoundPrice = _lowerBoundPrice;
        vaultReserve = _vaultReserve;
    }

    modifier airdropRoleOnly() {
        require(_airdropAllowed[msg.sender], "Only airdrop role allowed");
        _;
    }

    function airdrop(address[] memory addresses, uint256 amount)
        external
        airdropRoleOnly
    {
        require(
            totalSupply() + (addresses.length * amount) <= maxSupply,
            "Exceed max supply limit"
        );

        require(
            totalReserveMinted + (addresses.length * amount) <= maxReserve,
            "Insufficient reserve"
        );

        for (uint256 i = 0; i < addresses.length; i++) {
            _safeMint(addresses[i], amount);
        }

        totalReserveMinted = totalReserveMinted + (addresses.length * amount);
    }

    function setAirdropRole(address addr) external onlyOwner {
        _airdropAllowed[addr] = true;
    }

    function mintToken(uint256 amount, bytes calldata signature)
        external
        payable
        nonReentrant
        returns (bool)
    {
        require(!msg.sender.isContract(), "Contract is not allowed");
        require(
            getState() == SaleState.PrivateSaleDuring ||
                getState() == SaleState.PublicSaleDuring,
            "Sale not available"
        );

        if (getState() == SaleState.PublicSaleDuring) {
            require(
                amount <= maxPublicSalePerTx,
                "Mint exceed transaction limits"
            );
            require(
                _publicSaleClaimed[msg.sender] + amount <=
                    maxPublicClaimPerWallet,
                "Mint limit per wallet exceeded"
            );
            require(
                msg.value >= amount * getPriceByMode(),
                "Insufficient funds"
            );
            require(
                totalSupply() + amount + availableReserve() <= maxSupply,
                "Purchase exceed max supply"
            );
        }

        if (getState() == SaleState.PrivateSaleDuring) {
            require(isEIP712WhiteListed(signature), "Not whitelisted");
            require(
                amount <= maxPrivateSalePerTx,
                "Mint exceed transaction limits"
            );
            require(
                _privateSaleClaimed[msg.sender] + amount <=
                    maxWhitelistClaimPerWallet,
                "Mint limit per wallet exceeded"
            );
            require(
                totalPrivateSaleMinted + amount <= privateSaleCapped,
                "Purchase exceed private sale capped"
            );

            require(
                msg.value >= amount * getPriceByMode(),
                "Insufficient funds"
            );
        }

        if (
            getState() == SaleState.PrivateSaleDuring ||
            getState() == SaleState.PublicSaleDuring
        ) {
            require(
                _nextTxAllowBlock[msg.sender] == 0 ||
                _nextTxAllowBlock[msg.sender] <= block.number,
                "In re-entry cooldown"
            );
            require(
                totalSupply() + amount <= maxSupply,
                "Exceed max supply limit"
            );

            _safeMint(msg.sender, amount);

            if (getState() == SaleState.PublicSaleDuring) {
                _publicSaleClaimed[msg.sender] =
                    _publicSaleClaimed[msg.sender] +
                    amount;
                totalPublicMinted = totalPublicMinted + amount;
            }
            if (getState() == SaleState.PrivateSaleDuring) {
                _privateSaleClaimed[msg.sender] =
                    _privateSaleClaimed[msg.sender] +
                    amount;
                totalPrivateSaleMinted = totalPrivateSaleMinted + amount;
            }
            _nextTxAllowBlock[msg.sender] = block.number + delayReentryBlock;
            payable(_splitter).transfer(msg.value);
        }

        return true;
    }

    function setvaultReserve(uint256 _vaultReserve) external onlyOwner {
        vaultReserve = _vaultReserve;
    }
    
    function setBaseURI(string memory baseURI) external onlyOwner {
        _tokenBaseURI = baseURI;
    }

    function setDefaultURI(string memory defaultURI) external onlyOwner {
        _defaultURI = defaultURI;
        for(uint32 i = 0; i <= maxSupply; i++){
            _metadataId[i] = i;
        }
    }

    function getState() public view returns (SaleState) {
        uint256 supplyWithoutReserve = maxSupply - maxReserve;
        uint256 mintedWithoutReserve = totalPublicMinted +
            totalPrivateSaleMinted;

        if (
            salePhase != SalePhase.None &&
            saleState == SaleState.Close
        ) {
            return SaleState.Close;
        }

        if (
            salePhase != SalePhase.None &&
            saleState == SaleState.Pause
        ) {
            return SaleState.Pause;
        }

        if (salePhase == SalePhase.None) {
            return SaleState.NotStarted;
        }

        if (
            ( salePhase == SalePhase.Public &&
            mintedWithoutReserve == supplyWithoutReserve ) ||
            ( salePhase == SalePhase.Private &&
            totalPrivateSaleMinted == privateSaleCapped )
        ) {
            return SaleState.SoldOut;
        }

        if (
            ( salePhase == SalePhase.Public &&
            publicSale.endBlock > 0 &&
            block.number > publicSale.endBlock ) ||
            ( salePhase == SalePhase.Private &&
            privateSale.endBlock > 0 &&
            block.number > privateSale.endBlock )
        ) {
            return SaleState.Close;
        }

        if (
            salePhase == SalePhase.Public &&
            publicSale.beginBlock > 0 &&
            block.number >= publicSale.beginBlock
        ) {
            return SaleState.PublicSaleDuring;
        }

        if (
            salePhase == SalePhase.Private &&
            privateSale.beginBlock > 0 &&
            block.number >= privateSale.beginBlock
        ) {
            return SaleState.PrivateSaleDuring;
        }

        return SaleState.NotStarted;
    }

    function getStartSaleBlock() external view returns (uint256) {
        if (
            salePhase == SalePhase.Private ||
            SaleState.PrivateSaleDuring == getState()
        ) {
            return privateSale.beginBlock;
        }

        if (
            salePhase == SalePhase.Public ||
            SaleState.PublicSaleDuring == getState()
        ) {
            return publicSale.beginBlock;
        }

        return 0;
    }

    function getEndSaleBlock() external view returns (uint256) {
        if (
            salePhase == SalePhase.Private ||
            SaleState.PrivateSaleDuring == getState()
        ) {
            return privateSale.endBlock;
        }

        if (
            salePhase == SalePhase.Public ||
            SaleState.PublicSaleDuring == getState()
        ) {
            return publicSale.endBlock;
        }

        return 0;
    }

    function tokenBaseURI() external view returns (string memory) {
        return _tokenBaseURI;
    }

    function reveal() external onlyOwner {
        require(seed > 0, "Seed not random");
        revealed = true;
    }

    function setRandomSeed() external onlyOwner {
        require(randomSeedRecieved, "Randomness not recieved");
        seed = s_randWords;
        if (seed == 0 || seed > maxSupply) {
            seed = (uint256(keccak256(abi.encode(s_reqId, s_randWords))) % (maxSupply)) + 1;
        }
    }

    function freez() external onlyOwner {
        require(seed > 0, "Seed not random");
        uint256[] memory metadata = _metadataId;
        for (uint256 i = 1; i < metadata.length; i += 1) {
            metadata[i] = getMetaId(i);
            emit PermanentMetadataId(metadata[i], i);
        }
        _metadataId = metadata;
        freezed = true;
    }

    function getMetaId(uint256 tokenId) internal view returns (uint256) {
        uint256 metadataId = tokenId;
        uint256 j = (uint256(keccak256(abi.encode(seed, tokenId))) % (maxSupply)) + 1;
        if(j > vaultReserve) {
            metadataId = j;
        }
        return metadataId;
    }

    function tokenURI(uint256 tokenId)
        public
        view
        override(ERC721A)
        returns (string memory)
    {
        require(tokenId < totalSupply(), "Token not exist");
        if (!revealed) return _defaultURI;
        if (!freezed) return string(
            abi.encodePacked(
                _tokenBaseURI,
                Strings.toString(getMetaId(tokenId)),
                ".json"
            ));
        return string(
            abi.encodePacked(
                _tokenBaseURI,
                Strings.toString(_metadataId[tokenId]),
                ".json"
            ));
    }

    function availableReserve() public view returns (uint256) {
        return maxReserve - totalReserveMinted;
    }

    function getMaxSupplyByMode() public view returns (uint256) {
        if (getState() == SaleState.PrivateSaleDuring) return privateSaleCapped;
        if (getState() == SaleState.PublicSaleDuring)
            return maxSupply - totalPrivateSaleMinted - maxReserve;
        return 0;
    }

    function getMintedByMode() external view returns (uint256) {
        if (getState() == SaleState.PrivateSaleDuring)
            return totalPrivateSaleMinted;
        if (getState() == SaleState.PublicSaleDuring) return totalPublicMinted;
        return 0;
    }

    function getTransactionCappedByMode() external view returns (uint256) {
        return
            getState() == SaleState.PrivateSaleDuring
                ? maxPrivateSalePerTx
                : maxPublicSalePerTx;
    }

    function availableForSale() external view returns (uint256) {
        return maxSupply - totalSupply();
    }

    function getPriceByMode() public view returns (uint256) {
        if (getState() == SaleState.PrivateSaleDuring || salePhase == SalePhase.Private) return privateSalePrice;

        if (getState() == SaleState.PublicSaleDuring || salePhase == SalePhase.Public) {
            uint256 passedBlock = block.number - publicSale.beginBlock;
            uint256 discountPrice = (passedBlock / discountBlockSize) * priceFactor;

            if (discountPrice >= publicSalePrice - lowerBoundPrice) {
                return lowerBoundPrice;
            }
            return publicSalePrice - discountPrice;
        }

        return publicSalePrice;
    }
    
    function isReenter(address addr) external view returns (bool) {
        if(_nextTxAllowBlock[addr] <= block.number){
            return true;
        }
        return false;
    }

    function getReentryBlock(address addr) external view returns (uint256) {
        return _nextTxAllowBlock[addr];
    }

    function release(address payable account) public virtual onlyOwner {
        _splitter.release(account);
    }

    function setSplitter(revenueShareParams memory revenueShare) external onlyOwner {
        require(
            getState() != SaleState.PrivateSaleDuring &&
                getState() != SaleState.PublicSaleDuring,
            "don't set during sale"
        );
        _splitter = new PaymentSplitter(
            revenueShare.payees,
            revenueShare.shares
        );
    }

    function _startTokenId() internal view override virtual returns (uint256) {
        return 1;
    }

    function setVRFGasLimit(uint32 _vrfGasLimit) external onlyOwner {
        vrfGasLimit = _vrfGasLimit;
    }

    function requestRandomWords() external onlyOwner {
        s_reqId = COORDINATOR.requestRandomWords(
        keyHash,
        s_subId,
        3, // requestConfirmations,
        vrfGasLimit,
        1 // numWords
        );
        emit RandomseedRequested(block.timestamp, s_reqId);
    }

    function fulfillRandomWords(
        uint256,
        uint256[] memory randomWords
    ) internal override {
        s_randWords = randomWords[0];
        randomSeedRecieved = true;
        emit RandomseedFulfilment(block.timestamp, s_reqId, s_randWords);
    }
}

