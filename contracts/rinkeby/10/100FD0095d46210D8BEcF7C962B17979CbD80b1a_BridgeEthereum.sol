pragma solidity ^0.8.4;

import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "./common/AssetAddressHelper.sol";

contract BridgeEthereum is AssetAddressHelper {
  mapping(uint256 => bool) public lockedForever;

  event BridgeRequested(uint256[] indexed _ids, uint256[] indexed _amounts, address indexed sender);

  function bridge(uint256[] calldata _ids, uint256[] calldata _amounts) external {
    require(_ids.length == _amounts.length, "Arrays must be identical in length");
    IERC1155(_assetAddress).safeBatchTransferFrom(
      msg.sender,
      address(this),
      _ids,
      _amounts,
      "0x01"
    );

    emit BridgeRequested(_ids, _amounts, msg.sender);
  }

  function withdraw(
    address _to,
    uint256[] calldata _ids,
    uint256[] calldata _amounts
  ) external onlyOwner {
    for (uint256 i = 0; i < _ids.length; i++) {
      require(!lockedForever[_ids[i]], "Locked forever");
    }

    IERC1155(_assetAddress).safeBatchTransferFrom(address(this), _to, _ids, _amounts, "0x01");
  }

  function setLockedForever(uint256 tokenId, bool flag) external onlyOwner {
    lockedForever[tokenId] = flag;
  }
}

