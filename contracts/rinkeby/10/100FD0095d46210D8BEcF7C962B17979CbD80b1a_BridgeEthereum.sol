  address internal _assetAddress;

  function initialize(address assetAddress) external initializer {
    __Ownable_init();

    _assetAddress = assetAddress;
  }

  function getAssetAddress() external view onlyOwner returns (address) {
    return _assetAddress;
  }

  function updateAssetAddress(address assetAddress) external onlyOwner {
    require(_assetAddress != assetAddress, "Already set");
    _assetAddress = assetAddress;
  }
}

