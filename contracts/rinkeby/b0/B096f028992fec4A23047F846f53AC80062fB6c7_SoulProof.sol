pragma solidity ^0.8.4;

import "@openzeppelin/contracts/access/Ownable.sol";
import "./Sbt.sol";

contract SoulProof is Ownable {
    event EntityAdded(uint256 entityId, string entityName, address owner);
    event CollectionAdded(uint256 entityId, address collectionAddress);
    event SBTIssued(address collectionAddress, uint256 tokenId, address soul);
    event SBTRevoked(address collectionAddress, uint256 tokenId, address soul);
    event SBTUnrevoked(address collectionAddress, uint256 tokenId, address soul);

    modifier onlyEntityOwner(uint256 entityId) {
        require(entities[entityId].owner == msg.sender);
        _;
    }

    struct Entity {
        uint256 id;
        string entityName;
        address owner;
        SoulboundToken[] collections;
        address[] admins;
    }

    struct SoulCollection {
        address collectionAddress;
        uint256 tokenId;
        bool revoked;
    }

    mapping(address => uint256[]) public ownersToEntities;
    mapping(address => SoulCollection[]) private _soulsToCollections;
    Entity[] public entities;
    SoulboundToken[] public collections;

    uint256 addCollectionFees = 0;
    uint256 revokabilityFees = 0;
    uint256 issuanceFees = 0;

    constructor() {}

    function addEntity(string memory entityName, address owner) public onlyOwner {
        Entity storage newEntity = entities.push();
        uint256 id = entities.length - 1;
        newEntity.id = id;
        newEntity.entityName = entityName;
        newEntity.owner = owner;
        ownersToEntities[owner].push(id);
        emit EntityAdded(id, entityName, owner);
    }

    function setAddCollectionFees(uint256 newFees) public onlyOwner {
        addCollectionFees = newFees;
    }

    function setRevokabilityFees(uint256 newFees) public onlyOwner {
        revokabilityFees = newFees;
    }

    function setIssuanceFees(uint256 newFees) public onlyOwner {
        issuanceFees = newFees;
    }

    function addNewCollection(
        uint256 entityId,
        string memory collectionName,
        string memory symbol,
        bool isRevokable,
        string memory sbtBaseURI
    ) public payable onlyEntityOwner(entityId) returns (address) {
        uint256 fees = addCollectionFees;
        if(isRevokable) fees += revokabilityFees;
        require(msg.value >= fees, "Required fees were not attached.");
        SoulboundToken collection = new SoulboundToken(
            entityId,
            collectionName,
            symbol,
            isRevokable,
            sbtBaseURI
        );

        collections.push(collection);
        entities[entityId].collections.push(collection);
        address collectionAddress = address(collection);
        emit CollectionAdded(entityId, collectionAddress);
        return collectionAddress;
    }

    function issueSBT(uint256 entityId, address collectionAddress, address soul) public payable onlyEntityOwner(entityId) returns(uint256) {
        require(_belongsToEntity(entityId, collectionAddress), "Collection doesn't belong to entity.");
        require(msg.value >= issuanceFees, "Required fees were not attached.");
        uint256 tokenId = SoulboundToken(collectionAddress).safeMint(soul);
        SoulCollection storage soulCollection = _soulsToCollections[soul].push();
        soulCollection.collectionAddress = collectionAddress;
        soulCollection.tokenId = tokenId;
        soulCollection.revoked = false;
        emit SBTIssued(collectionAddress, tokenId, soul);
        return tokenId;
    }

    function revokeSBT(uint256 entityId, address collectionAddress, address soul) public payable onlyEntityOwner(entityId) {
        require(_belongsToEntity(entityId, collectionAddress), "Collection doesn't belong to entity.");
        require(msg.value >= revokabilityFees, "Required fees were not attached.");
        uint tokenId = SoulboundToken(collectionAddress).verify(soul);
        _updateRevokation(collectionAddress, soul, true);
        SoulboundToken(collectionAddress).revoke(soul);
        emit SBTRevoked(collectionAddress, tokenId, soul);
    }

    function unrevokeSBT(uint256 entityId, address collectionAddress, address soul) public payable onlyEntityOwner(entityId) {
        require(_belongsToEntity(entityId, collectionAddress), "Collection doesn't belong to entity.");
        require(msg.value == revokabilityFees, "Required fees were not attached.");
        _updateRevokation(collectionAddress, soul, false);
        SoulboundToken(collectionAddress).unrevoke(soul);
        uint256 tokenId = SoulboundToken(collectionAddress).verify(soul);
        emit SBTUnrevoked(collectionAddress, tokenId, soul);
    }

    function setCollectionBaseURI(uint256 entityId, address collectionAddress, string memory newSbtBaseURI) public onlyEntityOwner(entityId) {
        require(_belongsToEntity(entityId, collectionAddress), "Collection doesn't belong to entity.");
        SoulboundToken(collectionAddress).setBaseURI(newSbtBaseURI);
    }

    function ownerOfSBT(address collectionAddress, uint256 tokenId) public view returns(address) {
        return SoulboundToken(collectionAddress).ownerOf(tokenId);
    }

    function withdraw(uint256 amount, address to) public onlyOwner {
        require(amount <= address(this).balance);
        payable(to).transfer(amount);
    }

    function _belongsToEntity(uint256 entityId, address collectionAddress) public view returns(bool) {
        SoulboundToken[] storage entityCollections = entities[entityId].collections;
        for (uint256 i = 0; i < entityCollections.length; i++) {
            if(address(entityCollections[i]) == collectionAddress) {
                return true;
            }
        }
        return false;
    }

    function _updateRevokation(address collectionAddress, address soul, bool revoked) private {
        SoulCollection[] storage soulCollections = _soulsToCollections[soul];
        for (uint256 i = 0; i < soulCollections.length; i++) {
            if(soulCollections[i].collectionAddress == collectionAddress) {
                soulCollections[i].revoked = revoked;
                break;
            }
        }
        _soulsToCollections[soul] = soulCollections;
    }

    function getAllEntities() public view returns(Entity[] memory) {
        return entities;
    }

    function getEntityCollections(uint256 entityId) public view returns(SoulboundToken[] memory) {
        return entities[entityId].collections;
    }

    function getSoulCollections(address soul) public view returns(SoulCollection[] memory) {
        return _soulsToCollections[soul];
    }

    function getOwnerEntities(address owner) public view returns(Entity[] memory) {
        uint256[] memory ownerEntityIds = ownersToEntities[owner];
        Entity[] memory ownerEntities = new Entity[](ownerEntityIds.length);
        for (uint256 i = 0; i < ownerEntityIds.length; i++) {
            Entity memory entity = entities[ownerEntityIds[i]];
            ownerEntities[i] = entity;
        }
        return ownerEntities;
    }

    function totalSbtCount() public view returns (uint256) {
        uint256 total = 0;
        for (uint256 i = 0; i < collections.length; i++) {
            total += collections[i].totalIssued();
        }
        return total;
    }
}

