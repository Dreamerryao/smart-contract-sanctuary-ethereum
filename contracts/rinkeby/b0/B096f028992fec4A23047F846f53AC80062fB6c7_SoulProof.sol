import "./ERC721Custom.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/Counters.sol";

contract SoulboundToken is ERC721Custom, Ownable {
    using Counters for Counters.Counter;
    using Strings for uint256;

    struct CollectionInfo {
        uint256 entityId;
        string name;
        string symbol;
        bool isRevokable;
        uint256 totalIssued;
    }

    struct Soulbound {
        address soul;
        uint256 tokenId;
        string tokenURI;
        bool revoked;
    }
    
    Counters.Counter private _tokenIdCounter;
    uint256 public entityId;
    bool public _isRevokable;
    mapping(address => uint256) private _ownerToSbt;
    mapping(address => uint256) private _revokedOwners;
    mapping(uint256 => address) private _revokedTokens;

    constructor(uint256 entityId_, string memory name, string memory symbol, bool isRevokable, string memory sbtBaseURI) ERC721Custom(name, symbol, sbtBaseURI) {
        entityId = entityId_;
        _isRevokable = isRevokable;
        _tokenIdCounter.increment();
    }

    function setBaseURI(string memory newSbtBaseURI) public onlyOwner {
        super._setBaseURI(newSbtBaseURI);
    }

    function safeMint(address to) public onlyOwner returns(uint256) {
        require(_ownerToSbt[to] == 0, "Soul already belongs to this collection.");
        uint256 tokenId = _tokenIdCounter.current();
        _tokenIdCounter.increment();
        _safeMint(to, tokenId);
        _ownerToSbt[to] = tokenId;
        return tokenId;
    }

    function revoke(address soul) public onlyOwner {
        require(_isRevokable, "Collection doesn't support revoking.");
        uint256 tokenId = _ownerToSbt[soul];
        super._burn(tokenId);
        _revokedOwners[soul] = tokenId;
        _revokedTokens[tokenId] = soul;
    }

    function unrevoke(address soul) public onlyOwner returns(uint256) {
        require(_isRevokable, "Collection doesn't support revoking.");
        uint256 tokenId = _revokedOwners[soul];
        require(tokenId != 0, "Soul never had a token or was never revoked.");
        super._unburn(soul, tokenId);
        _revokedOwners[soul] = 0;
        _revokedTokens[tokenId] = address(0);
        return tokenId;
    }

    function collectionInfo() public view returns(CollectionInfo memory) {
        return CollectionInfo(
            entityId,
            name(),
            symbol(),
            _isRevokable,
            totalIssued()
        );
    }

    function getSoulbounds() public view returns(Soulbound[] memory) {
        uint256 size = totalIssued();
        Soulbound[] memory soulbounds = new Soulbound[](size);
        for (uint i = 0; i < size; i++) {
            uint index = i + 1;
            address owner = _revokedTokens[index];
            bool revoked;
            if (owner == address(0)) { //Token not revoked
                revoked = false;
                owner = ownerOf(index);
            } else {
                revoked = true;
            }
            soulbounds[i] = Soulbound(
                owner,
                index,
                tokenURI(index),
                revoked
            );
        }
        return soulbounds;
    }

    function totalIssued() public view returns(uint256) {
        return _tokenIdCounter.current() - 1;
    }

    function verify(address owner) public view returns(uint256) {
        uint256 tokenId = _ownerToSbt[owner];
        require(tokenId != 0, "Soul does not belong to this collection.");
        return tokenId;
    }

    function tokenURI(uint256 tokenId) public override view  returns(string memory) {
        require(_exists(tokenId),"token does not exist");
        string memory baseURI = _baseURI();
        return bytes(baseURI).length > 0 ? string(abi.encodePacked(baseURI, tokenId.toString())) : "";
    }
}

