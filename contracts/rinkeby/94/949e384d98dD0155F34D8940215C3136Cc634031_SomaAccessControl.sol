import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";

import "../utils/SomaContract.sol";

import "./ISomaAccessControl.sol";

contract SomaAccessControl is ISomaAccessControl, SomaContract, AccessControl {
    using EnumerableSet for EnumerableSet.Bytes32Set;
    using EnumerableSet for EnumerableSet.AddressSet;

    string public constant name = 'SomaAccessControl';

    mapping (address => EnumerableSet.Bytes32Set) private _accountRoles;
    mapping (bytes32 => EnumerableSet.AddressSet) private _roleAccounts;

    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor(address somaAddress) SomaContract(somaAddress) {}

    /**
     * @dev See {IERC165-supportsInterface}.
     */
    function supportsInterface(bytes4 interfaceId)
    public view virtual
    override(AccessControl, SomaContract)
    returns (bool) {
        return interfaceId == type(ISomaAccessControl).interfaceId ||
            interfaceId == type(IAccessControl).interfaceId ||
            super.supportsInterface(interfaceId);
    }

    function rolesOf(address account) external view override returns (bytes32[] memory) {
        return _accountRoles[account]._inner._values;
    }

    function accountsOf(bytes32 role) external view override returns (address[] memory) {
        uint256 length = _roleAccounts[role].length();
        address[] memory accounts = new address[](length);

        for (uint i; i < length; ++i) {
            accounts[i] = _roleAccounts[role].at(i);
        }

        return accounts;
    }

    /**
     * @dev Returns `true` if `account` has been granted `role`.
     */
    function hasRole(bytes32 role, address account) public view override returns (bool) {
        return super.hasRole(role, account) || SOMA.master() == account;
    }

    function grantRole(bytes32 role, address account) public virtual override {
        super.grantRole(role, account);
        _accountRoles[account].add(role);
        _roleAccounts[role].add(account);
    }

    function revokeRole(bytes32 role, address account) public virtual override {
        super.revokeRole(role, account);
        _accountRoles[account].remove(role);
        _roleAccounts[role].remove(account);
    }

    function revokeRoles(bytes32[] memory roles, address target) external override {
        for (uint i; i < roles.length; ++i) {
            revokeRole(roles[i], target);
        }
    }

    function grantRoles(bytes32[] memory roles, address target) external override {
        for (uint i; i < roles.length; ++i) {
            grantRole(roles[i], target);
        }
    }

    function setRoleAdmin(bytes32 role, bytes32 adminRole) external override onlyRole(getRoleAdmin(getRoleAdmin(role))) {
        _setRoleAdmin(role, adminRole);
    }
}

