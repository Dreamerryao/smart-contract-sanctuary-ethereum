pragma solidity ^0.8.0;

import "Ownable.sol";

contract TLSpec is Ownable {

    /**
     *  @notice event to show metadata for a token id has been stored on chain in the calldata
     *  @param tokenId is the token id
     *  @param metadata is the json metadata
     */
    event metadataStored(uint256 indexed tokenId, string indexed metadata);

    constructor() Ownable() {}

    /**
    * @notice function for storing metadata on-chain
    * @dev the metadata passed to the function should be string serialized json 'data:application/json,'
    * @dev large 4K images will exceed block limit, even in calldata,
    *      so the hash of the image is in the metadata submitted to the function.
    * @dev emits metadataStored event
    * @param _tokenIds are the token ids for which the metadata belongs
    * @param _metadata is a string array containing individual serialized json files, with image metadata hashed
    */
    function storeMetadata(uint256[] calldata _tokenIds, string[] calldata _metadata) external onlyOwner {
        require(_tokenIds.length == _metadata.length, "TL-Spec: Token Ids and metadata arrays are not the same length");
        uint256 len = _metadata.length;
        for(uint256 i; i < len; i++) {
            emit metadataStored(_tokenIds[i], _metadata[i]);
        }
    }
}

