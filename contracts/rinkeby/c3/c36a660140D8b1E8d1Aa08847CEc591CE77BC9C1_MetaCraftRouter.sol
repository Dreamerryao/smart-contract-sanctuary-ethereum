pragma solidity ^0.8.0;

import "SafeMath.sol";
import "Address.sol";
import "IERC20.sol";
import "Initializable.sol";
import "AccessControlUpgradeable.sol";
import "IERC721ReceiverUpgradeable.sol";
import "IRandoms.sol";
import "IMetaCharacter.sol";

contract MetaCraftRouter is Initializable, AccessControlUpgradeable, IERC721ReceiverUpgradeable {
    using SafeMath for uint256;

    uint256 public DAY;
    uint256 public dailyRecruitLimit;
    uint256 public characterPrice;
    uint256 public baseAttrible;
    uint256 public batchBaseAttrible;
    bool public batchLive;

    IERC20 public metaToken;
    IERC20 public goldToken;
    IMetaCharacter public characters;
    IRandoms public randoms;
    address public burnAddress;

    mapping(address => uint256) public draws_log;
    mapping(address => uint256) public draws_count;

    event UpdatedTokenContract(address tokenAddress);
    event UpdatedCharacterContract(address characterAddress);
    event CreatedMeta(address player, uint256 _tokenId);
    event UnlockedLevel(address player, uint256 _tokenId, uint256 level);

    modifier onlyOwner() {
        require(hasRole(DEFAULT_ADMIN_ROLE, msg.sender), "Not admin");
        _;
    }

    modifier batchEnabled() {
        require(batchLive, "BATCH_RECRUIT_NOT_LIVE");
        _;
    }

    function initialize(
        IERC20 _metaToken,
        IMetaCharacter _metaCharacter,
        IRandoms _randoms,
        IERC20 _goldToken
    ) public initializer {
        __AccessControl_init_unchained();

        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);

        metaToken = _metaToken;
        characters = _metaCharacter;
        randoms = _randoms;
        goldToken = _goldToken;
        characterPrice = 100e18;
        baseAttrible = 1;
        batchBaseAttrible = 60;
        batchLive = true;
        DAY = 1 days;
        dailyRecruitLimit = 20;
        burnAddress = 0x000000000000000000000000000000000000dEaD;
    }

    function batchRecruitToggle() external onlyOwner {
        batchLive = !batchLive;
    }

    function setMetaTokenContract(address tokenAddress) public onlyOwner {
        metaToken = IERC20(tokenAddress);
        emit UpdatedTokenContract(tokenAddress);
    }

    function setCharacterContract(address characterAddress) public onlyOwner {
        characters = IMetaCharacter(characterAddress);
        emit UpdatedCharacterContract(characterAddress);
    }

    function setRecruitDailyLimit(uint256 number) public onlyOwner {
        require(number > 0, "wrong number");
        dailyRecruitLimit = number;
    }

    function setBaseAttrible(uint256 _baseAttrible) public onlyOwner {
        require(_baseAttrible > 0 && _baseAttrible < 100, "wrong number");
        baseAttrible = _baseAttrible;
    }

    function setBatchBaseAttrible(uint256 _batchBaseAttrible) public onlyOwner {
        require(_batchBaseAttrible > 0 && _batchBaseAttrible < 100, "wrong number");
        batchBaseAttrible = _batchBaseAttrible;
    }

    function _mintMeta(
        address _fighter,
        uint256 _seed,
        uint256 _baseAttrible
    ) internal {
        uint256 metaId = characters.mint(_fighter, _seed, _baseAttrible);
        emit CreatedMeta(msg.sender, metaId);
    }

    function _createMeta(address payer, address fighter) internal {
        require(metaToken.balanceOf(payer) >= characterPrice, "Insufficient MTC balance");
        uint256 seed = randoms.getRandomSeed(fighter);
        _mintMeta(fighter, seed, baseAttrible);
        metaToken.transferFrom(payer, address(this), characterPrice);
    }

    function getDailyRecruitCount() external view returns (uint256) {
        if (block.timestamp > draws_log[msg.sender]) {
            return 0;
        }
        return draws_count[msg.sender];
    }

    function createMeta() external {
        require(!Address.isContract(msg.sender), "can't call from contract");

        if (block.timestamp > draws_log[msg.sender]) {
            draws_count[msg.sender] = 0;
            draws_log[msg.sender] = block.timestamp + DAY;
        }
        require(draws_count[msg.sender] < dailyRecruitLimit, "recruit to daily limit");
        _createMeta(msg.sender, msg.sender);
        draws_count[msg.sender]++;
    }

    function batchCreateMeta() external batchEnabled {
        require(!Address.isContract(msg.sender), "can't call from contract");
        if (block.timestamp > draws_log[msg.sender]) {
            draws_count[msg.sender] = 0;
            draws_log[msg.sender] = block.timestamp + DAY;
        }
        require((draws_count[msg.sender] + 10) <= dailyRecruitLimit, "recruit to daily limit");
        uint256 totalCost = characterPrice.mul(10);
        require(metaToken.balanceOf(msg.sender) >= totalCost, "Insufficient MTC balance");
        for (uint256 i = 1; i <= 9; i++) {
            uint256 temp_seed = randoms.getRandomSeedWithNonce(msg.sender, i);
            _mintMeta(msg.sender, temp_seed, baseAttrible);
        }
        // the last meta
        uint256 seed = randoms.getRandomSeedWithNonce(msg.sender, 10);
        _mintMeta(msg.sender, seed, batchBaseAttrible);

        metaToken.transferFrom(msg.sender, address(this), totalCost);
        draws_count[msg.sender] += 10;
    }

    function levelUp(uint256 _metaId) public {
        // require(!Address.isContract(msg.sender), "can't call from contract");
        uint256 level = characters.getLevel(_metaId);
        uint256 levelCost = getUnlockLevelPrice(level);

        goldToken.transferFrom(msg.sender, address(this), levelCost);
        characters.levelUp(_metaId);
        emit UnlockedLevel(msg.sender, _metaId, level + 1);
    }

    // cost by gold token
    function getUnlockLevelPrice(uint256 level) public view returns (uint256) {
        uint256 rate = 2**(level - 1);
        return rate.mul(5000).mul(10**18);
    }

    function onERC721Received(
        address,
        address,
        uint256,
        bytes calldata
    ) external pure override returns (bytes4) {
        return this.onERC721Received.selector;
    }
}

