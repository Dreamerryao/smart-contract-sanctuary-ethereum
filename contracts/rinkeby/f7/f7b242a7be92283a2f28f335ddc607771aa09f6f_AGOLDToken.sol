/**
 * @title ERC20Standard contract
 * @dev Logic defined by product requirements regarding transfering funds and calculating fees.
 * Interacts with {PermissionService}, {FeeProxy}, {Whitelist} and {Freeze} contracts.
 */
abstract contract ERC20Standard is ERC20Base {
    /// @dev Address for fee transfering
    address public vaultWallet;

    /// @dev Interface for FeeProxy contract
    IFeeProxy public feeProxy;

    /// @dev Interface for Whitelist contract
    IWhitelist public whitelist;

    /// @dev Interface for Freeze contract
    IFreeze public freeze;

    /// @dev Inteface for communication with PermissionService contract
    IPermissionService public permissionService;

    /// @dev Mapping deciding if address overrides {defaultTxFeePayer} value
    /// when transaction fee payer is decided
    mapping(address => bool) public receivingPartyDefaultTxFeeSetting;

    /// @dev Value defining minimum funds that address can hold (dust)
    uint256 private _minimumDustThreshold;

    /// @dev Mapping defining if the address is forced to pay the transaction fee
    mapping(address => bool) private _forceCharge;

    /// @dev Variable based on which transaction fee payer will be decided
    TxFeePayer private _defaultTxFeePayer;

    /// @dev Helper enum containing possible transaction fee payer options
    enum TxFeePayer {
        SENDER_PAYS,
        RECEIVER_PAYS
    }

    /// @dev Helper structure used for temporary storing calculated fee details
    struct FeeDetails {
        uint256 transferFee;
        uint256 receiverFee;
        uint256 senderFee;
    }

    /// @dev Helper structure used for temporary storing transaction details
    struct TransactionDetails {
        uint256 totalAmountReceived;
        uint256 totalAmountSend;
        bool destinationWalletDoesNotAcceptReceiverPay;
        bool destinationWalletDoesNotAcceptSenderPay;
    }

    /// @dev Event with information about transfer made
    event TransferDetails(
        uint256 txAmount,
        bool destinationWalletDoesNotAcceptReceiverPay,
        bool destinationWalletDoesNotAcceptSenderPays,
        uint256 senderTxFee,
        uint256 receiverTxFee,
        uint256 totalAmountSend,
        uint256 totalAmountReceived,
        uint256 transactionTime
    );

    modifier nonZeroAddress(address addr) {
        require(addr != address(0), "Zero address passed");
        _;
    }
 
    /**
     * @dev Unpauses contract code exection wrapped with `whenNotPaused` modifier
     */
    function unpause() external onlyOwner {
        _unpause();
    }

    /**
     * @dev Pauses contract code exection wrapped with `whenNotPaused` modifier
     */
    function pause() external onlyOwner {
        _pause();
    }

        /**
     * @dev Updates FeeProxy contract address
     * @param newFeeProxy Address of the new FeeProxy contract
     */
    function upgradeFeeProxy(address newFeeProxy)
        external
        onlyRole(RED_ROLE)
        nonZeroAddress(newFeeProxy)
    {
        feeProxy = IFeeProxy(newFeeProxy);
    }

    function upgradeTrustedForwarder(address newTrustedForwarder) 
        external
        onlyRole(RED_ROLE)
        nonZeroAddress(newTrustedForwarder)
    {
        _upgradeTrustedForwarder(newTrustedForwarder);
    }

    /**
     * @dev Sets overriden value for {defaultTxFeePayer} value for passed address
     * @param _for Address for which overriden value is set
     * @param forceCharge Boolean indicating if {_for} will be force charged transaction fee
     */
    function setForceFeePayer(address _for, bool forceCharge) external onlyRole(GREEN_ROLE) {
        receivingPartyDefaultTxFeeSetting[_for] = true;
        _forceCharge[_for] = forceCharge;
    }

    /**
     * @dev Sets default payer of transactions
     * @param defaultTxFeePayer Enum value for default transaction payer
     */
    function setDefaultTxFeePayer(TxFeePayer defaultTxFeePayer) external onlyRole(BLUE_ROLE) {
        _defaultTxFeePayer = defaultTxFeePayer;
    }

    /**
     * @dev Sets a new value for minimum account balance
     * @param newValue New value of minimum account balance
     */
    function upgradeMinimumDustThreshold(uint256 newValue) external onlyRole(BLUE_ROLE) {
        _minimumDustThreshold = newValue;
    }

    /**
     * @dev Sets Vault wallet address
     * @param newVaultWallet Address of the new Vault wallet
     */
    function setVaultWallet(address newVaultWallet)
        external
        onlyRole(BLUE_ROLE)
        nonZeroAddress(newVaultWallet)
    {
        vaultWallet = newVaultWallet;
    }

    /**
     * @dev Gets minimum account balance value
     * Note Added as to request that ABI should remain the same
     */
    function getMinimumDustThreshold() external view returns (uint256) {
        return _minimumDustThreshold;
    }

    /**
     * @dev Gets the value of overridden transaction payer value
     * Note Added as to request that ABI should remain the same
     * @param account Address to check value for
     * @return Boolean deciding if {account} is forced to pay the transaction fee
     */
    function getForceCharge(address account) external view returns (bool) {
        return _forceCharge[account];
    }

    /**
     * @dev Seizes funds on the address and passes them to authorized role address
     * @param from Address from whom funds will be seized
     * @param to Address to transfer seized funds from address {from}
     * @param amount Amount of funds that are going to be seized
     * Note If a value is zero, all funds are seized
     */
    function seizeFunds(
        address from,
        address to,
        uint256 amount
    )
        external
    {
        require(freeze.isFrozen(from), "Account not frozen");
        IPermissionService.Role role = permissionService.userRole(_msgSender());
        require(
            role == IPermissionService.Role.TOKEN_MANAGER_ADMIN
            || role == IPermissionService.Role.AUDITOR,
            "User not TMA or AU"
        );

        _transfer(
            from,
            to,
            amount == 0 ? super.balanceOf(from) : amount
        );
    }

    /**
     * @dev Mints amount of tokens to defined address
     * Note Emits {TransferDetails} event
     * @param to Address to mint tokens to
     * @param value Number of tokens minted
     * @return Boolean value if minting was successful
     */
    function mint(address to, uint256 value)
        external
        onlyRole(MINTER_ROLE)
        returns (bool)
    {
        _mint(to, value);

        emit TransferDetails(
            value,
            false,
            false,
            0,
            0,
            value,
            value,
            block.timestamp
        );

        return true;
    }

    /**
     * @dev Burns amount of token
     * @param amount Amount of token being burnt
     */
    function burn(uint256 amount) external onlyRole(BURNER_ROLE) {
        _burn(_msgSender(), amount);
    }

    /**
     * @inheritdoc IERC20Upgradeable
     */
    function transfer(address to, uint256 amount) override public returns (bool) {
        return _transferInternal(
            _msgSender(),
            to,
            amount,
            _defaultTxFeePayer,
            true
        );
    }

    /**
     * @dev Transfers funds to the specified address
     * Note Calls internal transfer for transferring funds and calculating fees
     * @param from Address sending funds
     * @param to Address receiving funds
     * @param value Value that's being transferred
     * @param payer Enum deciding who is the payer of the transaction fee
     * @return Boolean value if the transaction was successful
     */
    function transferFrom(
        address from,
        address to,
        uint256 value,
        TxFeePayer payer
    )
        external
        returns (bool)
    {
        return _transferInternal(
            from,
            to,
            value,
            payer,
            false
        );
    }

    /**
     * @inheritdoc IERC20Upgradeable
     */
    function transferFrom(
        address sender,
        address recipient,
        uint256 amount
    )
        public
        override
        returns (bool)
    {
        return _transferInternal(
            sender,
            recipient,
            amount,
            _defaultTxFeePayer,
            false
        );
    }

    /**
     * @dev Logic for transfering funds and calculating fees
     * Note Emits {TransferDetails} event
     * @param from Address sending funds
     * @param to Address receiving funds
     * @param sendingAmount Value that's being transfered
     * @param payer Enum indicating who pays for transaction fee
     * @param simpleTransfer Boolean deciding if {transfer} or {transferFrom} will be called
     * @return Boolean value if transfer was successful
     */
    function _transferInternal(
        address from,
        address to,
        uint256 sendingAmount,
        TxFeePayer payer,
        bool simpleTransfer
    )
        internal
        whenNotPaused
        returns (bool)
    {
        require(!freeze.isFrozen(from), "Account frozen");
        uint256 senderBalance = super.balanceOf(from);
        require(sendingAmount <= senderBalance, "Not enough funds");
        bool senderPays = _getSenderPays(payer, to);
        uint256 senderFee;

        TransactionDetails memory txDetails;
        FeeDetails memory feeDetails;

        feeDetails.transferFee = _calculateTransferFee(
            from,
            to,
            sendingAmount,
            payer
        );
        // Add fee to proper subject
        if (feeDetails.transferFee > 0) {
            if (senderPays) {
                feeDetails.senderFee += feeDetails.transferFee;
            } else {
                feeDetails.receiverFee += feeDetails.transferFee;
            }
        }
        // Correct sending amount if needed
        if (senderBalance - feeDetails.senderFee < sendingAmount) {
            sendingAmount = senderBalance - feeDetails.senderFee;
        }
        // Correct sender fee if future balance bellow dust threshold
        if(senderBalance - (feeDetails.senderFee + sendingAmount) < _minimumDustThreshold) {
            senderFee = senderBalance - sendingAmount;
            txDetails.totalAmountSend = senderBalance;
            feeDetails.transferFee = senderBalance - sendingAmount;
        } else {
            senderFee = feeDetails.senderFee;
            txDetails.totalAmountSend = sendingAmount + feeDetails.senderFee;
        }
        // Calculate additional event info
        if (feeDetails.transferFee > 0) {
            txDetails.totalAmountReceived = (
                senderPays ? sendingAmount : sendingAmount - feeDetails.transferFee
            );
            txDetails.destinationWalletDoesNotAcceptReceiverPay = (
                receivingPartyDefaultTxFeeSetting[to] ? senderPays : false
            );
            txDetails.destinationWalletDoesNotAcceptSenderPay = (
                receivingPartyDefaultTxFeeSetting[to] ? !senderPays : false
            );
        } else {
            txDetails.totalAmountReceived = sendingAmount;
        }

        if (simpleTransfer) {
            _transfer(
                from,
                to,
                sendingAmount,
                vaultWallet,
                feeDetails.receiverFee,
                senderFee
            );
        } else {
            _transferFrom(
                from,
                to,
                sendingAmount,
                vaultWallet,
                feeDetails.receiverFee,
                senderFee
            );
        }

        emit TransferDetails(
            sendingAmount,
            txDetails.destinationWalletDoesNotAcceptReceiverPay,
            txDetails.destinationWalletDoesNotAcceptSenderPay,
            senderPays ? feeDetails.transferFee : 0,
            senderPays ? 0 : feeDetails.transferFee,
            txDetails.totalAmountSend,
            txDetails.totalAmountReceived,
            block.timestamp
        );

        return true;
    }

    /**
     * @dev Gets transaction fee payer
     * @param payer Value used for deciding if default payer is reversed
     * @param receiver Address that receives funds
     * @return senderPays Boolean value determinating if sender or receiver is the payer of transaction fee
     */
    function _getSenderPays(TxFeePayer payer, address receiver) 
        private
        view
        returns (bool senderPays) 
    {
        if (receivingPartyDefaultTxFeeSetting[receiver]) {
            if (!_forceCharge[receiver]) {
                senderPays = true;
            }
        } else
            senderPays = (payer == TxFeePayer.SENDER_PAYS);
    }

    /**
     * @dev Calculates transaction fee
     * @param from Sender address
     * @param to Receiver address
     * @param value Value that's going to be transferred
     * @param payer Enum indicating who is paying transaction fee
     * @return fee Calculated fee
     */
    function _calculateTransferFee(
        address from,
        address to,
        uint256 value,
        TxFeePayer payer
    )
        private
        view
        returns (uint256 fee)
    {
        bool senderPays = (payer == TxFeePayer.SENDER_PAYS);
        address lookupAddress = senderPays ? from : to;

        uint256 txPercentDiscount = whitelist.getTransferDiscount(lookupAddress, senderPays);
        uint256 txFlatDiscount = whitelist.getTransferFlatDiscount(lookupAddress, senderPays);

        if (txPercentDiscount != 1e4 || txFlatDiscount > 0) {
            uint256 transferFee = feeProxy.calculateTransferFee(value, senderPays);
            uint256 discount = (transferFee * txPercentDiscount) / 1e4;
            discount += txFlatDiscount;

            if (transferFee >= discount)
                fee = transferFee - discount;
        }
    }
}

