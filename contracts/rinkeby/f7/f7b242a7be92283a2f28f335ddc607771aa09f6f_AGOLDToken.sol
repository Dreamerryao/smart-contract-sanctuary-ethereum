/**
 * @title ERC20Initializer
 * @dev Contract containing shared initialization logic for tokens
 */
abstract contract ERC20Initializer is ERC20Standard {
    /**
     * @dev Called to initialize token code in proxy context
     * @param _vaultWallet Address of vault wallet
     * @param _feeProxy Address of {FeeProxy} contract
     * @param _whitelist Address of {Whitelist} contract
     * @param _freeze Address of {Freeze} contract
     * @param _permissionService Address of {PermissionService} contract
     * @param redAccount Address of red account
     * @param greenAccount Address of green account
     * @param blueAccount Address of blue account
     * @param operator Address of operator account
     */
    function initialize(
        address _vaultWallet,
        address _feeProxy,
        address _whitelist,
        address _freeze,
        address _permissionService,
        address redAccount,
        address greenAccount,
        address blueAccount,
        address operator
    )
        public
        payable
        virtual
    {
        __ERC20Permit_init(name());

        vaultWallet = _vaultWallet;
        feeProxy = IFeeProxy(_feeProxy);
        whitelist = IWhitelist(_whitelist);
        freeze = IFreeze(_freeze);
        permissionService = IPermissionService(_permissionService);

        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
        _setupRole(RED_ROLE, redAccount);
        _setupRole(GREEN_ROLE, greenAccount);
        _setupRole(BLUE_ROLE, blueAccount);
        _setupRole(MINTER_ROLE, operator);
        _setupRole(BURNER_ROLE, operator);

        _transferOwnership(_msgSender());
    }
}

