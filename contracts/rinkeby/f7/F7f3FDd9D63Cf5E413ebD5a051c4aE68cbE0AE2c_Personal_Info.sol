pragma solidity >=0.8.0<0.9.0;


contract Personal_Info {

using SafeMath for uint256;

address contractOwner =0x30FF44eF6cAb43a4142bE8E0ed9a8129E8142915;

struct Info{
    string  name;
    string password;
    string email;
    string phone;
    string hash;
}

Info[] Persons;
uint256 no_of_people;
mapping(string=>uint256) person_index;

constructor(){
    no_of_people=0;
}

modifier onlyOwner(){
    require(msg.sender==contractOwner);
    _;
}

//Setter Function

function Add_Person(string memory _name,string memory _password,string memory _email,string memory _phone,string memory _hash) public {
    Persons.push(Info(_name,_password,_email,_phone,_hash));
    no_of_people++;
}

function Get_Info(uint256 id) public view returns(string memory,string memory,string memory,string memory){
    return (Persons[id].name,Persons[id].email,Persons[id].phone,Persons[id].hash);

}

function setName(uint256 _id,string memory _name)public  {
    Persons[_id].name=_name;
}

function setPhone(uint256 _id,string memory _phone)public {
    Persons[_id].phone=_phone;
}

function setEmail(uint256 _id,string memory _email)public {
    Persons[_id].email    =_email;
}

function setHash(uint256 _id,string memory _hash)public {
    Persons[_id].hash=_hash;
}

function IncrementNo() public  {
 no_of_people=no_of_people.add(1);
}

function setPassword(uint256 _id,string memory _password)public{
    Persons[_id].password=_password;
}

//Getter Functions

function getCounter() public view returns(uint256){
    return no_of_people;
}

function getID(string memory _name) public view returns(uint256) {
    return uint(person_index[_name]);
}

function getName(uint256 _id) public view returns(string memory)
{
return Persons[_id].name;
}


function getEmail(uint256 _id) public view returns(string memory)
{
return Persons[_id].email;
}

function getPhone(uint256 _id) public view returns(string memory)
{
return Persons[_id].phone;
}

function getHash(uint256 _id) public view returns(string memory)
{
return Persons[_id].hash;
}
}