contract TokenStake is Context, Ownable {
    using SafeMath for uint256;

    IERC20 public hdoglp;
    IERC20 public hdog;
    uint256 public apy;

    mapping(address => uint256) public stakingBalance;
    mapping(address => uint256) public widthIntersets;
    mapping(address => uint256[]) public deopsitListBal;
    mapping(address => uint256[]) public deopsitListTime;

    constructor (address _hdoglp, address _hdog) {
        hdoglp = IERC20(_hdoglp);
        hdog = IERC20(_hdog);
        uint _apy = 100000000000000000; //10% apy
        apy = _apy.div(365*24*3600);
    }
    function deposit(uint256 amount) external {
        hdoglp.transferFrom(msg.sender, address(this), amount);
        stakingBalance[msg.sender] = stakingBalance[msg.sender] + amount;
        deopsitListBal[msg.sender].push(amount);
        deopsitListTime[msg.sender].push(block.timestamp);
    }

    function queryInterests() view public returns (uint)  {
        uint addt;
        for (uint i=0; i<deopsitListBal[msg.sender].length; i++) {
            uint base = apy.mul(block.timestamp - deopsitListTime[msg.sender][i]).mul(deopsitListBal[msg.sender][i]).div(1000000000000000000);
            addt = addt + base;
        }
        return addt.sub(widthIntersets[msg.sender]);
    }

    function withdrawInterestsOnly(uint256 amount) external {
        require(queryInterests() >= amount, 'ont enough');
        hdog.transfer(msg.sender, amount);
        widthIntersets[msg.sender] = widthIntersets[msg.sender] + amount;
    }

    function withdraw(uint256 amount) external {
        require(stakingBalance[msg.sender] >= amount , 'balance not enough');
        uint interests = queryInterests();

        hdog.transfer(msg.sender, interests);
        hdoglp.transfer(msg.sender, amount);

        widthIntersets[msg.sender] = widthIntersets[msg.sender] + interests;
        stakingBalance[msg.sender] = stakingBalance[msg.sender] - amount;
    }

    function setApy(uint256 _apy) external onlyOwner() {
        apy = _apy;
    }
}