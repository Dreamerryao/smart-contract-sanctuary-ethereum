// contract Vault is ReentrancyGuard, IVault {
contract Vault {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    struct Position {
        uint256 size;
        uint256 collateral;
        uint256 leverage;
        uint256 averagePrice;
        // uint256 entryFundingRate;
        // uint256 reserveAmount;
        int256 realisedPnl;
        uint256 lastIncreasedTime;
    }

    // tokenBalances is used only to determine _transferIn values
    // mapping (address => uint256) public override tokenBalances;

    // positions tracks all open positions
    mapping (bytes32 => Position) public positions;

    mapping (uint256 => string) public errors;

    function increasePosition(
        uint256 usdIn, // value of commodity purchase in USD
        uint256 leverage, // shaan: we need this because its the variable that represents CHANGE (delta) in position (in terms of the token's units) +1 eth...
        uint256 commodityPrice // in USD
    ) external {
        uint256 sizeDelta = usdIn.mul(leverage);

        bytes32 key = getPositionKey(msg.sender);
        
        // Fetch or create new position
        Position storage position = positions[key];

        // Update the average purchase price of the user's position
        if (position.size == 0) {
            position.averagePrice = commodityPrice;
        }

        if (position.size > 0 && sizeDelta > 0) {
            position.averagePrice = getNextAveragePrice(commodityPrice, position.size, position.averagePrice, sizeDelta);
        }

        position.collateral = position.collateral.add(usdIn);

        position.size = position.size.add(sizeDelta);
        position.lastIncreasedTime = block.timestamp;
        position.leverage = leverage;
    }

    // Decrease the position, but keep the leverage constant; i.e decrease the collateral
    function decreasePositionLeverageConstant(
        uint256 _sizeDelta,
        uint256 tokenPrice // in USD
    ) external payable returns (uint256) {
        bytes32 key = getPositionKey(msg.sender);
        Position storage position = positions[key];

        uint256 _collateralDelta = _sizeDelta.div(position.leverage);
        uint256 usdOut = _reduceCollateral(msg.sender, _collateralDelta, _sizeDelta, tokenPrice);

        if (position.size != _sizeDelta) {
            position.size = position.size.sub(_sizeDelta);
        } else {
            delete positions[key];
        }

        // For now, we don't actually transfer usdOut, only return it so tests can check against it
        return usdOut;
    }

    function _reduceCollateral(address _account, uint256 _collateralDelta, uint256 _sizeDelta, uint256 currentPrice) private returns (uint256) {
        bytes32 key = getPositionKey(_account);
        Position storage position = positions[key];

        bool hasProfit;
        uint256 adjustedDelta;
        // scope variables to avoid stack too deep errors
        {
        (bool _hasProfit, uint256 delta) = getDelta(currentPrice, position.size, position.averagePrice);
        hasProfit = _hasProfit;
        // get the proportional change in pnl
        adjustedDelta = _sizeDelta.mul(delta).div(position.size);
        }

        uint256 usdOut;
        // transfer profits out
        if (hasProfit && adjustedDelta > 0) {
            usdOut = adjustedDelta;
            position.realisedPnl = position.realisedPnl + int256(adjustedDelta);
        }

        if (!hasProfit && adjustedDelta > 0) {
            position.collateral = position.collateral.sub(adjustedDelta);
            position.realisedPnl = position.realisedPnl - int256(adjustedDelta);
        }

        // reduce the position's collateral by _collateralDelta
        // transfer _collateralDelta out
        if (_collateralDelta > 0) {
            usdOut = usdOut.add(_collateralDelta);
            position.collateral = position.collateral.sub(_collateralDelta);
        }

        // if the position will be closed, then transfer the remaining collateral out
        if (position.size == _sizeDelta) {
            usdOut = usdOut.add(position.collateral);
            position.collateral = 0;
        }

        return usdOut;
    }

    function getPositionKey(address _account) public pure returns (bytes32) {
        return keccak256(abi.encodePacked(_account));
    }

    function getNextAveragePrice(uint256 newPrice, uint256 _size, uint256 oldAveragePrice, uint256 _sizeDelta) public view returns (uint256) {
        // There is also an assumption that a spread exists for the token, that assumption
        // is removed for this initial MVP
        (bool hasProfit, uint256 delta) = getDelta(newPrice, _size, oldAveragePrice);
        uint256 nextSize = _size.add(_sizeDelta);
        uint256 divisor = hasProfit ? nextSize.add(delta) : nextSize.sub(delta);
        return newPrice.mul(nextSize).div(divisor);
    }

    // Delta here refers to profit or loss
    function getDelta(uint256 newPrice, uint256 _size, uint256 oldAveragePrice) public view returns (bool, uint256) {
        _validate(oldAveragePrice > 0, 38);
        uint256 priceDelta = oldAveragePrice > newPrice ? oldAveragePrice.sub(newPrice) : newPrice.sub(oldAveragePrice); // mu(i) - p(i+1)
        uint256 delta = _size.mul(priceDelta).div(oldAveragePrice); // s * ()

        bool hasProfit = newPrice > oldAveragePrice;

        // cutting out of minProfitTime from initial version
        return (hasProfit, delta);
    }

    function _validate(bool _condition, uint256 _errorCode) private view {
        require(_condition, errors[_errorCode]);
    }
}

