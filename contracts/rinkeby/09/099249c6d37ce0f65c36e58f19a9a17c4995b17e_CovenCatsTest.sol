pragma solidity ^0.8.9;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";
import "@solmate/tokens/ERC721.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/utils/Base64.sol";
import "@openzeppelin/contracts/utils/Strings.sol";

contract CovenCatsTest is ERC721, ReentrancyGuard, Ownable {
    string private baseURI;
    // Root hash of Merkle tree
    // Should be bytes32 NOT string
    bytes32 public witchlistMerkleRoot;
    bytes32 public meowlistMerkleRoot;

    using Counters for Counters.Counter;
    Counters.Counter private tokenId;

    bool public isWitchlist;
    bool public isMeowlist;
    bool public isPublic;

    uint256 public constant CATS_NUM = 111;

    uint256 public price = 0.02 ether;
    uint256 public witchPrice = 0.01 ether;
    uint256 public constant MAX_PER_WALLET = 3;

    mapping(address => uint256) public witchlistCount;
    mapping(address => uint256) public meowlistCount;
    mapping(address => uint256) public publiclistCount;

    modifier witchSaleActive() {
        require(isWitchlist, "Cat sale not open");
        _;
    }

    modifier meowlistActive() {
        require(isMeowlist, "Meowlist is not open");
        _;
    }

    modifier publicSaleActive() {
        require(isPublic, "Public sale not open");
        _;
    }

    modifier validMerkle(bytes32[] calldata merkleProof, bytes32 merkleRoot) {
        require(
            MerkleProof.verify(
                merkleProof,
                merkleRoot,
                keccak256(abi.encodePacked(msg.sender))
            ),
            "Addy not in list"
        );
        _;
    }

    constructor() ERC721("CovenCatsTest", "CCT") Ownable() {}

    receive() external payable {}

    function setWitchMerkleRoot(bytes32 _root) external onlyOwner {
        witchlistMerkleRoot = _root;
    }

    function setMeowlistMerkleRoot(bytes32 _root) external onlyOwner {
        meowlistMerkleRoot = _root;
    }

    function witchlistMint(bytes32[] calldata _merkleProof, uint8 _numToMint)
        external
        payable
        nonReentrant
        witchSaleActive
        validMerkle(_merkleProof, witchlistMerkleRoot)
    {
        uint256 addyMinted = witchlistCount[msg.sender];
        require(
            addyMinted + _numToMint <= MAX_PER_WALLET,
            "Minted max of three"
        );
        witchlistCount[msg.sender] = addyMinted + _numToMint;
        for (uint256 i = 0; i < _numToMint; i++) {
            _safeMint(msg.sender, nextToken());
        }
    }

    function meowlistMint(bytes32[] calldata _merkleProof, uint8 _numToMint)
        external
        payable
        nonReentrant
        meowlistActive
        validMerkle(_merkleProof, meowlistMerkleRoot)
    {
        uint256 addyMinted = meowlistCount[msg.sender];
        require(
            addyMinted + _numToMint <= MAX_PER_WALLET,
            "Minted max of three"
        );

        meowlistCount[msg.sender] = addyMinted + _numToMint;
        for (uint256 i = 0; i < _numToMint; i++) {
            _safeMint(msg.sender, nextToken());
        }
    }

    function publicMint(uint256 _numToMint)
        external
        payable
        nonReentrant
        publicSaleActive
    {
        uint256 addyMinted = publiclistCount[msg.sender];
        require(
            addyMinted + _numToMint <= MAX_PER_WALLET,
            "Minted max of three"
        );
        publiclistCount[msg.sender] = addyMinted + _numToMint;
        for (uint256 i = 0; i < _numToMint; i++) {
            _safeMint(msg.sender, nextToken());
        }
    }

    function nextToken() private returns (uint256) {
        tokenId.increment();
        return tokenId.current();
    }

    function toggleMeowlist(bool _isMeowlist) external onlyOwner {
        isMeowlist = _isMeowlist;
    }

    function togglePubliclist(bool _isPublic) external onlyOwner {
        isPublic = _isPublic;
    }

    function toggleWitchlist(bool _isWitchlist) external onlyOwner {
        isWitchlist = _isWitchlist;
    }

    function iNeedMyRinkebyBack() public onlyOwner {
        uint256 balance = address(this).balance;
        payable(msg.sender).transfer(balance);
    }

    function tokenURI(uint256 _tokenId)
        public
        view
        virtual
        override
        returns (string memory)
    {
        string
            memory imagePart = "<svg xmlns='http://www.w3.org/2000/svg' preserveAspectRatio='xMinYMin meet' viewBox='0 0 350 350'><style>.base { fill: black; font-family: serif; font-size: 14px; }</style><rect width='100%' height='100%' fill='white' /><text x='10' y='20' class='base'>Coven Kitty</text></svg>";

        string memory output = string(abi.encodePacked(imagePart));

        string memory json = Base64.encode(
            bytes(
                string(
                    abi.encodePacked(
                        "{'name': 'CCT #",
                        Strings.toString(_tokenId),
                        "', 'description': 'we outchea.', 'image': 'data:image/svg+xml;base64,",
                        Base64.encode(bytes(output)),
                        "'}"
                    )
                )
            )
        );

        return string(abi.encodePacked("data:application/json;base64,", json));
    }
}

