pragma solidity 0.8.4;

import "../openzeppelin/IERC20.sol";
import "../openzeppelin/SafeERC20.sol";
import "../openzeppelin/Math.sol";
import "../interface/IItem.sol";
import "../interface/IOracle.sol";
import "../interface/IHero.sol";
import "../interface/IStatController.sol";
import "./NftBase.sol";

abstract contract ItemBase is NftBase, IItem {
  using SlotsLib for bytes32;
  using SafeERC20 for IERC20;

  // ---- CONSTANTS ----

  /// @notice Version of the contract
  /// @dev Should be incremented when contract changed
  string public constant ITEM_BASE_VERSION = "1.0.0";
  uint internal constant _AUGMENT_FACTOR = 10;
  bytes32 internal constant _INDEX_SLOT = bytes32(uint256(keccak256("eip1967.ItemBase.Index")) - 1);
  bytes32 internal constant _AUGMENT_TOKEN_SLOT = bytes32(uint256(keccak256("eip1967.ItemBase.AugmentToken")) - 1);
  bytes32 internal constant _AUGMENT_TOKEN_AMOUNT_SLOT = bytes32(uint256(keccak256("eip1967.ItemBase.AugmentTokenAmount")) - 1);
  bytes32 internal constant _ITEM_LEVEL_SLOT = bytes32(uint256(keccak256("eip1967.ItemBase.ItemLevel")) - 1);
  bytes32 internal constant _ITEM_TYPE_SLOT = bytes32(uint256(keccak256("eip1967.ItemBase.ItemType")) - 1);


  // ---- VARIABLES ----

  mapping(uint => IStatController.Attributes) internal _itemAttributes;
  mapping(uint => uint) public override itemRarity;
  mapping(uint => bool) public override equipped;
  mapping(uint => uint) public override augmentationLevel;
  mapping(uint => string) internal _itemUriByRarity;

  // ---- INITIALIZER ----

  function __ItemBase_init(
    string memory name_,
    string memory symbol_,
    address controller_,
    address augmentToken_,
    uint augmentTokenAmount_,
    uint itemLevel_,
    ItemType itemType_
  ) internal onlyInitializing {
    __NftBase_init(name_, symbol_, controller_);
    _AUGMENT_TOKEN_SLOT.set(augmentToken_);
    _AUGMENT_TOKEN_AMOUNT_SLOT.set(augmentTokenAmount_);
    _ITEM_LEVEL_SLOT.set(itemLevel_);
    _ITEM_TYPE_SLOT.set(uint(itemType_));
  }

  // ---- RESTRICTIONS ----

  function onlyDungeon() internal view {
    require(IController(_controller()).validDungeons(msg.sender), "I: Not dungeon");
  }

  function onlyApprovedOrOwner(uint tokenId) internal view {
    require(_isApprovedOrOwner(msg.sender, tokenId), "I: Not owner");
  }


  // ---- VIEWS ----

  function isItem() external pure override returns (bool) {
    return true;
  }

  function isConsumableItem() external pure override returns (bool) {
    return _isConsumableItem();
  }

  function _isConsumableItem() internal pure virtual returns (bool) {
    return false;
  }

  function augmentToken() external view override returns (address) {
    return _AUGMENT_TOKEN_SLOT.getAddress();
  }

  function augmentTokenAmount() external view override returns (uint) {
    return _AUGMENT_TOKEN_AMOUNT_SLOT.getUint();
  }

  function itemLevel() external view override returns (uint) {
    return _ITEM_LEVEL_SLOT.getUint();
  }

  function itemType() external view override returns (uint) {
    return _ITEM_TYPE_SLOT.getUint();
  }

  function _statController() internal view returns (IStatController) {
    return IStatController(IController(_controller()).statController());
  }

  function _oracle() internal view returns (IOracle) {
    return IOracle(IController(_controller()).oracle());
  }

  function _specificURI(uint tokenId) internal view override returns (string memory) {
    return _itemUriByRarity[itemRarity[tokenId]];
  }

  // ---- ACTIONS ----

  function setItemUriByRarity(string memory uri, uint rarity) external {
    require(_isGovernance(msg.sender) || _isController(msg.sender), "Not gov or controller");
    _itemUriByRarity[rarity] = uri;
  }

  function mint() external override returns (uint tokenId) {
    onlyDungeon();
    tokenId = _INDEX_SLOT.getUint();
    _INDEX_SLOT.set(tokenId + 1);
    _safeMint(msg.sender, tokenId);

    ItemRarity rarity;
    (_itemAttributes[tokenId], rarity) = _generateAttributes();
    itemRarity[tokenId] = uint(rarity);

    _afterMint(tokenId);
  }

  function equip(uint tokenId, address heroToken, uint heroTokenId, uint itemSlot) external {
    onlyApprovedOrOwner(tokenId);
    require(IHero(heroToken).isApprovedOrOwner(address(this), heroTokenId), "Not hero owner");
    require(!equipped[tokenId], "Item already equipped");
    require(IHero(heroToken).currentDungeon(heroTokenId) == address(0), "Hero in dungeon");

    IStatController.CoreAttributes memory requirements = _requirementAttributes();
    IStatController.Attributes memory attributes = IHero(heroToken).attributes(tokenId);

    require(requirements.strength <= attributes.strength, "Strength too low");
    require(requirements.dexterity <= attributes.dexterity, "Dexterity too low");
    require(requirements.vitality <= attributes.vitality, "Vitality too low");
    require(requirements.energy <= attributes.energy, "Energy too low");

    uint _itemType = _ITEM_TYPE_SLOT.getUint();
    if (_itemType != 0) {
      _statController().changeHeroItemSlot(
        heroToken,
        heroTokenId,
        _itemType,
        itemSlot,
        address(this),
        tokenId
      );
    }
    _statController().addBonusAttributes(heroToken, heroTokenId, _itemAttributes[tokenId]);
    equipped[tokenId] = true;
  }

  function takeOff(uint tokenId, address heroToken, uint heroTokenId, uint itemSlot) external {
    onlyApprovedOrOwner(tokenId);
    require(IHero(heroToken).isApprovedOrOwner(address(this), heroTokenId), "Not hero owner");
    require(IHero(heroToken).currentDungeon(heroTokenId) == address(0), "Hero in dungeon");
    require(equipped[tokenId], "Item not equipped");

    uint _itemType = _ITEM_TYPE_SLOT.getUint();
    if (_itemType != 0) {
      _statController().changeHeroItemSlot(
        heroToken,
        heroTokenId,
        _itemType,
        itemSlot,
        address(0),
        0
      );
    }

    _statController().removeBonusAttributes(heroToken, heroTokenId, _itemAttributes[tokenId]);
    equipped[tokenId] = false;
  }

  function augment(uint tokenId) external {
    address token = _AUGMENT_TOKEN_SLOT.getAddress();
    require(token != address(0), "No augmentation");
    onlyApprovedOrOwner(tokenId);
    require(!_isConsumableItem(), "Consumable item");
    require(!equipped[tokenId], "Item equipped");

    uint random = _oracle().getRandomNumber(1);
    // 50% chance to destroy
    if (random == 0) {
      _destroy(tokenId);
      return;
    }

    uint ag = augmentationLevel[tokenId];
    augmentationLevel[tokenId] = ag + 1;

    IStatController.Attributes memory current = _itemAttributes[tokenId];

    _itemAttributes[tokenId] = IStatController.Attributes({
    strength : _augmentAttribute(current.strength),
    dexterity : _augmentAttribute(current.dexterity),
    vitality : _augmentAttribute(current.vitality),
    energy : _augmentAttribute(current.energy),
    damageMin : _augmentAttribute(current.damageMin),
    damageMax : _augmentAttribute(current.damageMax),
    attackRating : _augmentAttribute(current.attackRating),
    defense : _augmentAttribute(current.defense),
    blockRating : _augmentAttribute(current.blockRating),
    life : _augmentAttribute(current.life),
    mana : _augmentAttribute(current.mana),
    fireResistance : _augmentAttribute(current.fireResistance),
    coldResistance : _augmentAttribute(current.coldResistance),
    lightningResistance : _augmentAttribute(current.lightningResistance)
    });

    _additionalAugment(tokenId);

    // move fee to treasury
    {
      uint amount = _AUGMENT_TOKEN_AMOUNT_SLOT.getUint();
      uint toTreasury = amount / 2;
      IERC20(token).safeTransferFrom(
        msg.sender,
        IController(_controller()).treasury(),
        toTreasury
      );
      IERC20(token).safeTransferFrom(
        msg.sender,
        _controller(),
        amount - toTreasury
      );
    }
  }

  function _destroy(uint tokenId) internal {
    _burn(tokenId);
  }

  function _augmentAttribute(uint value) internal pure returns (uint) {
    if (value == 0) {
      return 0;
    }
    // bonus must be not lower than 1
    return value + Math.max(Math.ceilDiv(value, _AUGMENT_FACTOR), 1);
  }


  function _randomAttribute(uint base, uint bonus, uint chance, uint random) internal pure returns (uint) {
    if (random > chance) {
      return base;
    }
    // bonus must be not lower than 1
    return base + Math.max(Math.ceilDiv(bonus * (1e18 - random), 1e18), 1);
  }

  function _calculateRarity(uint random) internal pure returns (ItemRarity) {
    require(random <= 1e18, "Too high random");
    random = 100 - (random / 1e16);
    if (random < 30) {
      return ItemRarity.RARE;
    } else if (random < 70) {
      return ItemRarity.MAGIC;
    } else {
      return ItemRarity.NORMAL;
    }
  }

  function _generateAttributes()
  internal virtual returns (IStatController.Attributes memory, ItemRarity);

  function _requirementAttributes() internal virtual returns (IStatController.CoreAttributes memory);

  function _afterMint(uint tokenId) internal virtual {}

  function _additionalAugment(uint tokenId) internal virtual {}

  /**
 * @dev This empty reserved space is put in place to allow future versions to add new
 * variables without shifting down storage in the inheritance chain.
 * See https://docs.openzeppelin.com/contracts/4.x/upgradeable#storage_gaps
 */
  uint256[47] private __gap;

}

