abstract contract ConsumableItemBase is ItemBase, IConsumableItem {
  using SlotsLib for bytes32;

  // ---- CONSTANTS ----

  /// @notice Version of the contract
  /// @dev Should be incremented when contract changed
  string public constant CONSUMABLE_ITEM_BASE_VERSION = "1.0.0";


  // ---- VARIABLES ----

  mapping(uint => IStatController.Attributes) _itemsConsumableAttributes;
  mapping(uint => IStatController.ChangeableStats) _itemsConsumableStats;

  // ---- INITIALIZER ----

  function __ConsumableItemBase_init(
    string memory name_,
    string memory symbol_,
    address controller_,
    uint itemLevel_,
    ItemType itemType_
  ) internal onlyInitializing {
    __ItemBase_init(
      name_,
      symbol_,
      controller_,
      address(0),
      0,
      itemLevel_,
      itemType_
    );
  }

  // ---- RESTRICTIONS ----

  // ---- VIEWS ----

  function _isConsumableItem() internal pure override returns (bool) {
    return true;
  }

  function consumableAttributesAndStats(uint tokenId)
  external view override returns (IStatController.Attributes memory, IStatController.ChangeableStats memory) {
    return (_itemsConsumableAttributes[tokenId], _itemsConsumableStats[tokenId]);
  }

  // ---- ACTIONS ----

  function use(uint tokenId, address heroToken, uint heroTokenId) external {
    onlyApprovedOrOwner(tokenId);

    IStatController.ChangeableStats memory buffStats = _itemsConsumableStats[tokenId];

    if (buffStats.experience != 0 || buffStats.life != 0 || buffStats.mana != 0) {
      _statController().changeCurrentStats(heroToken, heroTokenId, buffStats, true);
    }

    IStatController.Attributes memory buffAttributes = _itemsConsumableAttributes[tokenId];
    if (
      buffAttributes.strength != 0
      || buffAttributes.dexterity != 0
      || buffAttributes.vitality != 0
      || buffAttributes.energy != 0
      || buffAttributes.damageMin != 0
      || buffAttributes.damageMax != 0
      || buffAttributes.attackRating != 0
      || buffAttributes.defense != 0
      || buffAttributes.blockRating != 0
      || buffAttributes.life != 0
      || buffAttributes.mana != 0
      || buffAttributes.fireResistance != 0
      || buffAttributes.coldResistance != 0
      || buffAttributes.lightningResistance != 0
    ) {
      _statController().changeTemporallyAttributes(heroToken, heroTokenId, buffAttributes, true);
    }
    _destroy(tokenId);
  }

  function _afterMint(uint tokenId) internal override {
    super._afterMint(tokenId);
    (_itemsConsumableAttributes[tokenId], _itemsConsumableStats[tokenId]) = _generateConsumableItem(tokenId);
  }

  function _generateConsumableItem(uint tokenId) internal virtual returns (IStatController.Attributes memory, IStatController.ChangeableStats memory);

  /**
* @dev This empty reserved space is put in place to allow future versions to add new
* variables without shifting down storage in the inheritance chain.
* See https://docs.openzeppelin.com/contracts/4.x/upgradeable#storage_gaps
*/
  uint256[48] private __gap;
}

