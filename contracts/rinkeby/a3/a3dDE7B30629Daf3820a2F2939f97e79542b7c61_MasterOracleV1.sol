/**
 * @title gain's Master
 * @dev Controller for an elastic supply currency based on the uFragments Ideal Money protocol a.k.a. Ampleforth.
 *      uFragments operates symmetrically on expansion and contraction. It will both split and
 *      combine coins to maintain a stable unit price.
 *
 *      This component regulates the token supply of the uFragments ERC20 token in response to
 *      market oracles.
 */
contract MasterOracleV1 is OwnableUpgradeable {
    using SafeMath for uint256;
    using SafeMathInt for int256;
    using UInt256Lib for uint256;

    struct Transaction {
        bool enabled;
        address destination;
        bytes data;
    }

    event TransactionFailed(address indexed destination, uint index, bytes data);

    // Stable ordering is not guaranteed.
    Transaction[] public transactions;

    event LogRebase(
        uint256 indexed epoch,
        uint256 exchangeRate,
        int256 requestedSupplyAdjustment,
        uint256 timestampSec
    );

    event rebase1(uint112 r0, uint112 r1, uint32 t);

    event check(int256 number);

    IGain public gain;

    uint256 public deviationThreshold;


    uint256 public lastRebaseTimestampSec;

    uint256 public epoch;
    
    bool public rebaseLocked; 

    IUniswapV2Pair private _gain_usd;
    uint private usdcGainPrice0CumulativeLast;
    uint private usdcGainPrice1CumulativeLast;
    uint32 private gainUsdcBlockTimestampLast;
    
    uint256 private constant MAX_RATE = 10**6 * 10**18;
    // MAX_SUPPLY = MAX_INT256 / MAX_RATE
    uint256 private constant MAX_SUPPLY = ~(uint256(1) << 255) / MAX_RATE;

    function initialize() public initializer {

        __Ownable_init(msg.sender);
        lastRebaseTimestampSec = 0;
        epoch = 0;
        rebaseLocked = true;

        gain = IGain(0xE43912D2024C35f3b6807fB50843149F87d7104e);
        _gain_usd = IUniswapV2Pair(0x9cF6C0fa3b273Db87168FdF113B3dB5D9022a5A9);

    }
        
    function setRebaseLocked(bool _locked) external onlyOwner {
        rebaseLocked = _locked;
    }

    function canRebase() public view returns (bool) {
        return (!rebaseLocked);
    }

    function updateAddress(address _gain, address _pair_address) external onlyOwner{
         gain = IGain(_gain);
        _gain_usd = IUniswapV2Pair(_pair_address);
    }
    

    function rebase() external onlyOwner{

        require(canRebase(), "MasterOracle: You can not rebase");
        epoch = epoch + 1; 

        lastRebaseTimestampSec = block.timestamp;
        uint112 reserve0;
        uint112 reserve1;
        uint status;
        int256 supplyDelta;

        (reserve0, reserve1, gainUsdcBlockTimestampLast) = _gain_usd.getReserves();

        emit rebase1(reserve0, reserve1, gainUsdcBlockTimestampLast);

        if(reserve0 > reserve1){

            uint256 reservePercentage = uint256(reserve0 - reserve1);
            uint256 percentage = (reservePercentage * 1000000000000000000) / uint256(reserve0);
            uint256 totalSupply = uint256(gain.totalSupply());
            uint256 data = percentage * totalSupply;

            supplyDelta = -int256(data / 1000000000000000000);
            emit check(supplyDelta);
            status = 0;

        }else if(reserve1 > reserve0){

            uint256 reservePercentage = uint256(reserve1 - reserve0);
            uint256 percentage = (reservePercentage * 1000000000000000000) / uint256(reserve1);
            uint256 totalSupply = uint256(gain.totalSupply());
            uint256 data = percentage * totalSupply;
            
            supplyDelta = int256(data / 1000000000000000000);
            emit check(supplyDelta);
            status = 1;

        }else {
            supplyDelta = 0;
        }
        
        gain.rebase(epoch, supplyDelta);

        _gain_usd.sync();
        
    
    }


}

