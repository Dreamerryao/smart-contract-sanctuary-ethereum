pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/presets/ERC20PresetMinterPauser.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721Receiver.sol";
import "../interfaces/IERC721Validator.sol";
import "../interfaces/IJukebox.sol";

/// @title Jukebox
/// @author sina.eth
/// @notice Broker for offers to mint ERC20 tokens in exchange for ERC721s
contract Jukebox is Ownable, IJukebox, IERC721Receiver {
    event OrderCreated(
        address validator,
        address indexed tokenAddress,
        address nftBeneficiary,
        uint256 tokensPerTribute,
        uint256 maxFills,
        uint256 expirationTime,
        bytes32 indexed salt
    );
    event OrderFilled(
        bytes32 indexed salt,
        address taker,
        address indexed tokenAddr,
        uint256 tokenId
    );
    event OrderDisabled(bytes32 indexed salt);

    error BadOrderParamsError();
    error OrderCreatorMissingMinterRoleError();
    error SwapperMissingMinterRoleError();
    error OrderAlreadyExistsError();
    error InvalidOrderError();
    error InvalidNftError(address addr, uint256 id);
    error OrderAlreadyDisabledError();
    error MissingOrderDisablerRoleError();

    struct Order {
        IERC721Validator validator;
        ERC20PresetMinterPauser erc20;
        address nftBeneficiary;
        uint256 tokensPerTribute;
        uint256 fills;
        uint256 expirationTime;
    }

    bytes32 public immutable ORDER_DISABLER_ROLE;
    mapping(bytes32 => Order) public orders;

    constructor(address owner) {
        ORDER_DISABLER_ROLE = keccak256(
            abi.encode(address(this), "DISABLE_ORDER_ROLE")
        );
        transferOwnership(owner);
    }

    /// @notice Adds an order to the "Jukebox" orderbook
    /// @param erc20 The ERC20 token to mint as part of the order
    /// @param erc721Validator The ERC721 Validator for the order
    /// @param nftBeneficiary The address to forward NFTs filling the order to
    /// @param tokensPerTribute Number of tokens to pay out per order fill
    /// @param maxFills Maximum number of NFTs this order can be filled for
    /// @param expirationTime Timestamp in seconds of when the order should expire
    /// @return salt The unique identifying salt for the added order
    function addOrder(
        ERC20PresetMinterPauser erc20,
        IERC721Validator erc721Validator,
        address nftBeneficiary,
        uint256 tokensPerTribute,
        uint256 maxFills,
        uint256 expirationTime
    ) external returns (bytes32 salt) {
        // Checks
        if (expirationTime <= block.timestamp || maxFills == 0) {
            revert BadOrderParamsError();
        }
        if (!erc20.hasRole(erc20.MINTER_ROLE(), msg.sender)) {
            revert OrderCreatorMissingMinterRoleError();
        }
        if (!erc20.hasRole(erc20.MINTER_ROLE(), address(this))) {
            revert SwapperMissingMinterRoleError();
        }
        salt = keccak256(msg.data);
        if (orders[salt].expirationTime != 0) {
            revert OrderAlreadyExistsError();
        }

        // Add new order
        orders[salt] = Order(
            erc721Validator,
            erc20,
            nftBeneficiary,
            tokensPerTribute,
            maxFills,
            expirationTime
        );
        emit OrderCreated(
            address(erc721Validator),
            address(erc20),
            nftBeneficiary,
            tokensPerTribute,
            maxFills,
            expirationTime,
            salt
        );
    }

    /// @notice Disables an order
    /// @param salt Unique identifying salt of the order to be cancelled
    function disableOrder(bytes32 salt) external {
        if (!orders[salt].erc20.hasRole(ORDER_DISABLER_ROLE, msg.sender)) {
            revert MissingOrderDisablerRoleError();
        }
        orders[salt].fills = 0;
        emit OrderDisabled(salt);
    }

    function getValidOrder(bytes32 salt)
        internal
        view
        returns (Order storage order)
    {
        order = orders[salt];
        if (order.expirationTime <= block.timestamp) {
            revert InvalidOrderError();
        }
    }

    /// @notice Handles filling an order via a ERC721Received callback
    function onERC721Received(
        address, // operator
        address from,
        uint256 tokenId,
        bytes calldata data
    ) external override returns (bytes4) {
        bytes32 salt = abi.decode(data, (bytes32));
        Order storage order = getValidOrder(salt);
        if (
            !IERC721Validator(order.validator).meetsCriteria(
                msg.sender, // the NFT contract address
                tokenId
            )
        ) {
            revert InvalidNftError(msg.sender, tokenId);
        }

        order.fills -= 1;
        // Payout to order filler and beneficiary
        order.erc20.mint(from, order.tokensPerTribute);
        IERC721(msg.sender).safeTransferFrom(
            address(this),
            order.nftBeneficiary,
            tokenId
        );

        emit OrderFilled(salt, from, msg.sender, tokenId);
        return this.onERC721Received.selector;
    }

    /// @notice Fills a single order multiple times
    /// @param salt Unique identifier of order to be filled
    /// @param erc721Groupings Struct of multiple ERC721s to fill the order with
    function batchFill(bytes32 salt, ERC721Grouping[] calldata erc721Groupings)
        external
    {
        Order storage order = getValidOrder(salt);
        uint256 tributeCounter = 0;
        IERC721 erc721;
        uint256 id;
        for (uint256 i = 0; i < erc721Groupings.length; i++) {
            tributeCounter += erc721Groupings[i].ids.length;
            erc721 = erc721Groupings[i].erc721;
            for (uint256 j = 0; j < erc721Groupings[i].ids.length; j++) {
                id = erc721Groupings[i].ids[j];
                if (!order.validator.meetsCriteria(address(erc721), id)) {
                    revert InvalidNftError(address(erc721), id);
                }
                // Forward NFT to benecifiary
                // NOTE: reentrancy should be safe here, since we're decrementing
                //   the number of fills based on its value at decrement-time.
                erc721.safeTransferFrom(
                    erc721.ownerOf(id),
                    order.nftBeneficiary,
                    id
                );
                emit OrderFilled(salt, msg.sender, address(erc721), id);
            }
        }
        order.fills -= tributeCounter;
        // Payout to order filler
        order.erc20.mint(msg.sender, order.tokensPerTribute * tributeCounter);
    }

    function recoverERC20(IERC20 tokenAddress, uint256 amount)
        external
        onlyOwner
    {
        tokenAddress.transfer(owner(), amount);
    }

    function recoverERC721(IERC721 tokenAddress, uint256 tokenId)
        external
        onlyOwner
    {
        tokenAddress.safeTransferFrom(address(this), owner(), tokenId);
    }
}

