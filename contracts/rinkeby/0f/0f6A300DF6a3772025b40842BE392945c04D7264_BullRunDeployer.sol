import "./BullRunConfig.sol";
import "./BullRunToken.sol";
import "./BullRunDistributor.sol";

contract BullRunDeployer {

    address public config;
    address public token;
    address public distributor;

    constructor(address vault, bytes32 holdersMerkleRoot, string memory holdersUri, bytes32 whitelistMerkleRoot, string memory whitelistUri, address usdt) {
        config = address(new BullRunConfig());
        token = address(new BullRunToken("BullRun Token", "BULL", 475000 ether, config, usdt, vault));
        distributor = address(new BullRunDistributor(holdersMerkleRoot, holdersUri, config));
        
        BullRunConfig(config).initialize(token, distributor, vault);
        BullRunConfig(config).grantAdminRole(msg.sender);
        BullRunConfig(config).grantPayerRole(msg.sender);
        BullRunConfig(config).grantAdminRole(distributor);
        BullRunToken(token).updateWhitelist(whitelistMerkleRoot, whitelistUri);
    }
}

