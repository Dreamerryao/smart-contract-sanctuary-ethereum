    bytes32 public constant WITHDRAW_ROLE = keccak256("WITHDRAW_ROLE");

    event LootBoxOpened(address indexed buyer, uint itemsMinted);
    
    enum Rarity { Common, Uncommon, Rare, Epic, Legendary }
    uint256 constant NUM_CLASSES = 5;
    uint256 seed = 1;

    constructor() {
        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
        totalNumberOfTokens = 0;
    }

    uint256 public totalNumberOfTokens;
    uint256[] public indexIds;
 
    //mapping(uint256 => uint256) indexIds_toTokenIds;
    //mapping(uint256 => uint8) indexIds_toRarityIds;

    struct TokenForSaleEntry {
        uint256 tokenId;
        uint8 rarityId;
    }
    mapping(uint256 => TokenForSaleEntry) indexIds_toTokens;
 
    mapping(uint256 => uint256) tokenIds_toIndex;


    INumiToken721 internal numi_token;
    address internal numi_token_address;

    // function getTokenAtIndex(uint256 _index) public view returns (uint256 tokenId_response, uint8 rarityId_response ) {
    //     return (
    //         indexIds_toTokenIds[_index],
    //         indexIds_toRarityIds[_index]
    //         );
    // }

    function getTokenAtIndex(uint256 _index) public view returns (uint256 tokenId_response, uint8 rarityId_response ) {
        TokenForSaleEntry memory indexIds_toTokens_entry = indexIds_toTokens[_index];
        
        return (
            indexIds_toTokens_entry.tokenId,
            indexIds_toTokens_entry.rarityId
            );
    }

    function getIndexOfTokenId(uint256 _tokenId) public view returns (uint256 indexId_response) {
        return tokenIds_toIndex[_tokenId]; 
    }

    function addToList(uint256 _tokenId, uint8 _rarityId) public returns (bool) {
        require(hasRole(DEFAULT_ADMIN_ROLE, _msgSender()), "Caller is not a admin");

        //increase total number of index items count
        //update data on the position

        uint256 newTokenIndexId = totalNumberOfTokens;
        totalNumberOfTokens++;

        indexIds.push(newTokenIndexId);

        // indexIds_toTokenIds[newTokenIndexId] = _tokenId;
        // indexIds_toRarityIds[newTokenIndexId] = _rarityId;

        TokenForSaleEntry storage indexIds_toTokens_entry = indexIds_toTokens[newTokenIndexId];
        indexIds_toTokens_entry.tokenId = _tokenId;
        indexIds_toTokens_entry.rarityId = _rarityId;

        tokenIds_toIndex[_tokenId] = newTokenIndexId;

        return true;
    }

    function bulkAddToList(uint256[] calldata _tokenIds, uint8[] calldata _rarityIds) external {
        require(hasRole(DEFAULT_ADMIN_ROLE, _msgSender()), "Caller is not a admin");

        for (uint index = 0; index < _tokenIds.length; index++) {
            require(addToList(_tokenIds[index], _rarityIds[index]), "item already exists");
         }
    }

    function removeFromList(uint256 _tokenId) public returns (bool) {
        require(hasRole(DEFAULT_ADMIN_ROLE, _msgSender()), "Caller is not a admin");
   
        // get the index where the token id is
        uint256 indexOfToken = getIndexOfTokenId(_tokenId);
        
        // erase data there
        // indexIds_toTokenIds[indexOfToken] = 0;
        // indexIds_toRarityIds[indexOfToken] = 0;
        TokenForSaleEntry storage indexIds_toTokens_entry = indexIds_toTokens[indexOfToken];
        indexIds_toTokens_entry.tokenId = 0;
        indexIds_toTokens_entry.rarityId = 0;

        // copy data from the last index to the removed index
        //tokenIds[indexOfToken] = tokenIds[totalNumberOfTokens-1];
        // indexIds_toTokenIds[indexOfToken] = indexIds_toTokenIds[totalNumberOfTokens-1];
        // indexIds_toRarityIds[indexOfToken] = indexIds_toRarityIds[totalNumberOfTokens-1];
        TokenForSaleEntry storage move_from = indexIds_toTokens[totalNumberOfTokens-1];
        indexIds_toTokens_entry.tokenId = move_from.tokenId;
        indexIds_toTokens_entry.rarityId = move_from.rarityId;

        
        // erase data on the last index
        // indexIds_toTokenIds[totalNumberOfTokens-1] = 0;
        // indexIds_toRarityIds[totalNumberOfTokens-1] = 0;
        move_from.tokenId = 0;
        move_from.rarityId = 0;

        // lower total number of index items
        totalNumberOfTokens--;

        return true;
    }

    


    // config
    
    function setConfig(address _tokenaddress) public returns (bool result) { 
        require(hasRole(DEFAULT_ADMIN_ROLE, _msgSender()), "Caller is not a admin");

        numi_token_address = _tokenaddress;
        numi_token = INumiToken721(numi_token_address);
        //numi_token_defaultUri = _defaultUri;
        
        return true;
    }

    function getConfig() public view returns (address tokenaddress_) {         
        return numi_token_address;
    }
    
    uint256 mintFee;

    function setMintFee(uint256 _mintFee) public returns (bool result) { 
        require(hasRole(DEFAULT_ADMIN_ROLE, _msgSender()), "Caller is not a admin");

        mintFee = _mintFee;
        
        return true;
    }

    function getMintFee() public view returns (uint256 mintFee_) {         
        return mintFee;
    }
    
    // mint
    event Mint(uint256 indexed tokenId, address indexed buyer, uint256 price);
    
    //debug
    event MintDebug(
        uint256 random,
        uint256 randomTokenIndex,
        uint256 tokenId,
        uint8 rarityId
        );

    function mint() public payable whenNotPaused nonReentrant {
        require(msg.value > mintFee, "Insufficient funds passed, below mintFee");
        require(totalNumberOfTokens > 0, "No tokens left for sale");

        // 1 coins per pack, 75000 coins, random number, mod(75000)

        uint256 randomValue = _random();
        uint256 randomTokenIndex = randomValue.mod(totalNumberOfTokens);

        (uint256 tokenId_, uint8 rarityId_) = getTokenAtIndex(randomTokenIndex);
        emit MintDebug(randomValue, randomTokenIndex, tokenId_, rarityId_);

        removeFromList(tokenId_);

        numi_token.mint(_msgSender(), tokenId_, rarityId_);
        // emit Mint(tokenId_, _msgSender(), msg.value );
    }

    function withdraw() public {
        require(hasRole(WITHDRAW_ROLE, _msgSender()), "Caller is not a withdrawer");

        payable(_msgSender()).transfer(address(this).balance);
    }

    function _random() internal returns (uint256) {
        uint256 randomNumber = uint256(keccak256(abi.encodePacked(blockhash(block.number - 1), _msgSender(), seed)));
        seed = randomNumber;
        return randomNumber;
    }
}