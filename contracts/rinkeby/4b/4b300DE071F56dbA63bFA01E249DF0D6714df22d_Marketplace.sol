        // 1. add to listings
        _listings721[tokenId] = Listing721({owner: msg.sender, price: price});
        // 2. transferFrom(user, this)
        IERC721(token721).safeTransferFrom(msg.sender, address(this), tokenId);
        emit Item721Listed(tokenId, price);
    }

