        address token721_,
        address token1155_,
        address token20_,
        uint256 auctionDuration_
    ) external override onlyRole(DEFAULT_ADMIN_ROLE) {
        token721 = token721_;
        token1155 = token1155_;
        token20 = token20_;
        auctionDuration = auctionDuration_;
    }
