    /// @param _tokenid The ID of the token
    /// @dev Function adds dynamically the token's ID to the base URI
    function uri(uint256 _tokenid) override public view returns (string memory) {
        return string(
            abi.encodePacked(
                super.uri(_tokenid),
                Strings.toString(_tokenid)
            )
        );
    }
}

