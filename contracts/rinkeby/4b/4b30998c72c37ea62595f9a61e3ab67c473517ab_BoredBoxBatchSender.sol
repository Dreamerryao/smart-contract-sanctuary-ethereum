pragma solidity 0.8.11;

import { IERC1155 } from "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import { IERC721 } from "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import { IERC721Receiver } from "@openzeppelin/contracts/token/ERC721/IERC721Receiver.sol";
import { IERC721Metadata } from "@openzeppelin/contracts/token/ERC721/extensions/IERC721Metadata.sol";
import { ERC165Checker } from "@openzeppelin/contracts/utils/introspection/ERC165Checker.sol";
import { Pausable } from "@openzeppelin/contracts/security/Pausable.sol";
import { IBoredBoxBatchSender_Functions } from "./IBoredBoxBatchSender.sol";

///
contract BoredBoxBatchSender is Pausable, IBoredBoxBatchSender_Functions {
    string constant public partner = "partner01";

    /// Mapping account to authorized state
    mapping(address => bool) public isAuthorized;

    /// Mapping `boxTokenId` to `contractAddress` claimed state
    mapping(uint256 => mapping(address => bool)) public claimed;

    /// TODO: double-check these values be correct
    bytes4 constant _ERC721 = 0x80ac58cd;
    bytes4 constant _ERC1155 = 0xd9b67a26;

    /* ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ */
    /* ↑     Storage     ↑ */
    /* ↓  Custom events  ↓ */
    /* ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ */

    /* ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ */
    /* ↑         Custom events       ↑ */
    /* ↓  Modifiers and constructor  ↓ */
    /* ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ */

    modifier onlyAuthorized() {
        require(isAuthorized[msg.sender], "Not authorized");
        _;
    }

    ///
    constructor(address owner) {
        isAuthorized[owner] = true;
    }

    /* ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ */
    /* ↑  Modifiers and constructor  ↑ */
    /* ↓       on-chain external     ↓ */
    /* ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ */

    /* ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ */
    /* ↑     on-chain external    ↑ */
    /* ↓  miscellaneous external  ↓ */
    /* ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ */

    /* ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ */
    /* ↑  miscellaneous external  ↑ */
    /* ↓    off-chain external    ↓ */
    /* ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ */

    /// @dev See {IBoredBoxBatchSender_Functions-batchTransfer}
    function batchTransfer(
        address tokenContract,
        uint256[] calldata boxes,
        uint256[] calldata tokenIds,
        address[] calldata recipients
    ) external whenNotPaused onlyAuthorized {
        uint256 boxes_length = boxes.length;
        require(boxes_length > 0, "Insufficient boxes provided");

        require(
            boxes_length == tokenIds.length && boxes_length == recipients.length,
            "Length missmatch between; boxes, tokenIds, and/or recipients"
        );

        for (uint256 i; i < boxes_length; ) {
            uint256 box = boxes[i];
            if (!claimed[box][tokenContract]) {
                uint256 tokenId = tokenIds[i];
                address recipient = recipients[i];
                if (ERC165Checker.supportsInterface(tokenContract, _ERC721)) {
                    IERC721(tokenContract).transferFrom(msg.sender, recipient, tokenId);
                    claimed[box][tokenContract] = true;
                } else if (ERC165Checker.supportsInterface(tokenContract, _ERC1155)) {
                    IERC1155(tokenContract).safeTransferFrom(msg.sender, recipient, tokenId, 1, "");
                    claimed[box][tokenContract] = true;
                }
            }

            unchecked {
                ++i;
            }
        }
    }

    ///
    function setAuthorized(address key, bool value) external onlyAuthorized {
        isAuthorized[key] = value;
    }

    ///
    function pause() external onlyAuthorized {
        _pause();
    }

    ///
    function unpause() external onlyAuthorized {
        _unpause();
    }

    /* ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ */
    /* ↑  off-chain external  ↑ */
    /* ↓        Public        ↓ */
    /* ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ */

    /* ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ */
    /* ↑   Public   ↑ */
    /* ↓  Internal  ↓ */
    /* ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ */
}

