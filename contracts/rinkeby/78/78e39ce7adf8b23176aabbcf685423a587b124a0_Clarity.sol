    function _addTier(
        uint256 _ecoSystemFee,
        uint256 _liquidityFee,
        uint256 _taxFee,
        uint256 _ownerFee,
        uint256 _burnFee,
        address _ecoSystem,
        address _owner
    ) internal returns (FeeTier memory) {
        FeeTier memory _newTier = checkFees(FeeTier(
                _ecoSystemFee,
                _liquidityFee,
                _taxFee,
                _ownerFee,
                _burnFee,
                _ecoSystem,
                _owner
            ));
        feeTiers.push(_newTier);

        return _newTier;
    }

