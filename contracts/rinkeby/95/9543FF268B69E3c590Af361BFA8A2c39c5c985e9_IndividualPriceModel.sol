pragma solidity 0.8.6;

contract IndividualPriceModel {
    uint256 private _defaultWeiPerDay;

    constructor() {
        _defaultWeiPerDay = 0.002 ether;
    }

    function individualPrice(uint256 duration, uint256 individualWeiPerDay) external pure returns (uint256) {
        return individualWeiPerDay * duration;
    }

    function price(uint256 duration) external view returns (uint256) {
        return _defaultWeiPerDay * duration;
    }

    function setMinimumWeiPerDay(uint256 amountWei) external {
        _defaultWeiPerDay = amountWei;
    }

    function isIndividualPricing() external pure returns (bool) {
        return true;
    }

    function defaultWeiPerDay() external view returns (uint256) {
        return _defaultWeiPerDay;
    }
}