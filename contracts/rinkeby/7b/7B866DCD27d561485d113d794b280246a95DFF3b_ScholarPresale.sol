pragma solidity ^0.8.7;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@chainlink/contracts/src/v0.8/interfaces/AggregatorV3Interface.sol";

contract ScholarPresale is Ownable {
    using SafeMath for uint256;

    mapping(address => uint256) public tokenAllocation;

    // SCLR Token Price in USD and decimals
    int256 private sclrPrice = 50 * 10**15; // 50 cents
    uint8 public sclrDecimals = 18;

    // Presale Amount
    uint256 public presaleTokenSupply = 120_000_000 * 10**sclrDecimals;
    uint256 public totalRunningSupply = 0;

    // Oracle Price Feed
    address public ethUsdPriceFeed = 0x8A753747A1Fa494EC906cE90E9f37563A8AF630e;

    // Address USDC
    // address public usdcAddress = 0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48;
    address public usdcAddress = 0xb313eB0BDcC5a24E63E45400722237E22159eF92; // Testnet Rinkeby

    // Address of recipient wallet
    address payable recipient = payable(0x2C10c0a80D46F4eE6780C40bee05e42C8c7D845A);
    bool public pause = true;
    address[] public investors;

    // constructor() {
    //     ethPriceFeed = AggregatorV3Interface(0x9326BFA02ADD2366b30bacB125260Af641031331);
    // }

    // function getLatestPrice() public view returns (int) {
    //     (
    //         uint80 roundID, 
    //         int price,
    //         uint startedAt,
    //         uint timeStamp,
    //         uint80 answeredInRound
    //     ) = ethPriceFeed.latestRoundData();
    //     return price;
    // }

    function investorCount() public view returns (uint256) {
        return investors.length;
    }

    function tokenConvert(uint256 _usd) internal pure returns (uint256) {
        return _usd.mul(100).div(5);
    }

    function changeTokenAddress(address _usdcAddress) public onlyOwner {
        usdcAddress = _usdcAddress;
    }

    function acceptUSDC(uint256 _amount) public {
        require(_amount + tokenAllocation[msg.sender] >= 250_000 * 10**6, "Minimum amount >= 250,000 USD");
        require(pause == false, "Presale is paused");
        uint256 sclrAmount = tokenConvert(_amount);
        require(
            totalRunningSupply + sclrAmount <= presaleTokenSupply,
            "Presale is sold out"
        );
        tokenAllocation[msg.sender] += sclrAmount;
        totalRunningSupply += sclrAmount;
        investors.push(msg.sender);
        IERC20(usdcAddress).transferFrom(msg.sender, address(this), _amount);
    }


    function debug(uint256 ethAmount) public view returns (uint256, int256) {
        (int256 sclrPriceInEth, int256 quotePrice) = getDerivedPrice(sclrPrice, sclrDecimals, ethUsdPriceFeed, sclrDecimals);
        uint256 sclrAmount = ethAmount.mul(uint256(sclrPriceInEth)).div(10**18);


        return (sclrAmount, quotePrice);
    }

    function acceptETH() public payable {
        (int256 sclrPriceInEth, int256 quotePrice) = getDerivedPrice(sclrPrice, sclrDecimals, ethUsdPriceFeed, sclrDecimals);
        uint256 ethUsdValue = msg.value.mul(uint256(quotePrice)).div(10**18);
        uint256 sclrAmount = msg.value.mul(uint256(sclrPriceInEth)).div(10**18);

        // minimum investment is $250,000 
        require(ethUsdValue >= 250_000*10**8, "Minimum amount >= 250,000 USD");
        // Presale must not be paused
        require(pause == false, "Presale is paused");
        // Presale is sold out
        require(
            totalRunningSupply + sclrAmount <= presaleTokenSupply,
            "Presale is sold out"
        );

        tokenAllocation[msg.sender] += sclrAmount;
        totalRunningSupply += sclrAmount;
        investors.push(msg.sender);
    }

    function withdrawERC20() public {
        uint256 usdcBalance = IERC20(usdcAddress).balanceOf(address(this));
        IERC20(usdcAddress).transfer(recipient, usdcBalance);
    }

    function withdrawEth() public {
        bool sent = recipient.send(address(this).balance);
        require(sent, "Failed to send Ether");
    }

    function togglePause() public onlyOwner {
        pause = !pause;
    }

    


    function getDerivedPrice(
        int256 basePrice,
        uint8 baseDecimals,
        address _quote, 
        uint8 _decimals
    ) public view returns (int256, int256) {

        // usd/sclr / usd/eth = eth/sclr
        require(_decimals > uint8(0) && _decimals <= uint8(18), "Invalid _decimals");
        int256 decimals = int256(10 ** uint256(_decimals));
        // basePrice = scalePrice(basePrice, baseDecimals, _decimals);

        ( , int256 quotePrice, , , ) = AggregatorV3Interface(_quote).latestRoundData();
        uint8 quoteDecimals = AggregatorV3Interface(_quote).decimals();
        quotePrice = scalePrice(quotePrice, quoteDecimals, _decimals);

        // usd/eth / usd/sclr = sclr/eth 
        return (quotePrice * decimals / basePrice,     quotePrice);
        // return (basePrice,     quotePrice);
        // 1000000000000000000
    }

    function scalePrice(
        int256 _price, 
        uint8 _priceDecimals, 
        uint8 _decimals
    ) internal pure returns (int256) {

        if (_priceDecimals < _decimals) {
            return _price * int256(10 ** uint256(_decimals - _priceDecimals));
        } else if (_priceDecimals > _decimals) {
            return _price / int256(10 ** uint256(_priceDecimals - _decimals));
        }
        return _price;
    
    }
}

