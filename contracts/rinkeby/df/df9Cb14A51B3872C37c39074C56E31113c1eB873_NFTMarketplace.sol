pragma solidity >=0.4.22 <0.9.0;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

import "@openzeppelin/contracts/utils/math/SafeMath.sol";

import "@openzeppelin/contracts/utils/cryptography/SignatureChecker.sol";

contract NFTMarketplace is Ownable {
    using SafeMath for uint256;

    address public adminHashCodeSigner;
    address public royaltyPercentageReciever;
    address public additionalETHPaymentReciever;

    uint256 public royaltyPercentage;
    uint256 public ethAdditionalPaymentPercentage;

    mapping(uint256 => bool) isListingIdExecuted;

    struct Listing {
        uint256 id;
        address user;
        address tokenContract;
        uint256 tokenId;
        uint256 amount;
        address buyToken;
        uint256 price;
        bool isERC721;
    }

    mapping(address => bool) public paymentTokens;

    event TokenAdded(address token);
    event TokenRemoved(address token);
    event ListingExecuted(Listing listing);

    constructor(
        address _adminHashCodeSigner,
        address _royaltyPercentageReciever,
        address _additionalETHPaymentReciever,
        uint256 _royaltyPercentage,
        uint256 _ethAdditionalPaymentPercentage
    ) {
        paymentTokens[address(0)] = true; // This will be utilized to normal ETH payment, If paymentToken address is NULL Address.

        adminHashCodeSigner = _adminHashCodeSigner;
        royaltyPercentageReciever = _royaltyPercentageReciever;
        additionalETHPaymentReciever = _additionalETHPaymentReciever;

        royaltyPercentage = _royaltyPercentage;
        ethAdditionalPaymentPercentage = _ethAdditionalPaymentPercentage;
    }

    /// @dev Checks is the Listing is already executed
    /// @param _listingId - Listing Id to be processed
    function _existsListingId(uint256 _listingId) internal view returns (bool) {
        if (isListingIdExecuted[_listingId]) // check for duplicate key
        {
            return true;
        }
        return false;
    }

    /// @dev Update the Smart Contract Admin Address
    /// @param _newAdminHashCodeSigner - Address of the new Smart Contract Admin
    function updateAdminHashCodeSigner(address _newAdminHashCodeSigner)
        external
        onlyOwner
    {
        adminHashCodeSigner = _newAdminHashCodeSigner;
    }

    /// @dev Update the Royalty Percentage Reciever Address
    /// @param _newRoyaltyPercentageReciever - Address of the New Royalty Percentage Reciever
    function updateRoyaltyPercentageReciever(
        address _newRoyaltyPercentageReciever
    ) external onlyOwner {
        royaltyPercentageReciever = _newRoyaltyPercentageReciever;
    }

    /// @dev Update the Additional ETH Payment Reciever Address
    /// @param _newAdditionalETHPaymentReciever - Address of the New Additional ETH Payment Reciever
    function updateAdditionalETHPaymentReciever(
        address _newAdditionalETHPaymentReciever
    ) external onlyOwner {
        additionalETHPaymentReciever = _newAdditionalETHPaymentReciever;
    }

    /// @dev Update the royalty percentage
    /// @param _newRoyaltyPercentage - new royalty percentage
    function updateRoyaltyPercentage(uint256 _newRoyaltyPercentage)
        external
        onlyOwner
    {
        royaltyPercentage = _newRoyaltyPercentage;
    }

    /// @dev Update the Eth Additional Payment Percentage
    /// @param _newEthAdditionalPaymentPercentage - New Eth Additional Payment Percentage
    function updateEthAdditionalPaymentPercentage(
        uint256 _newEthAdditionalPaymentPercentage
    ) external onlyOwner {
        ethAdditionalPaymentPercentage = _newEthAdditionalPaymentPercentage;
    }

    /// @dev Add the token address which can be used for the purchasing the NFT
    /// @param token - address of a ERC20 deployed contract
    function addToken(address token) external onlyOwner {
        require(!paymentTokens[token], "Token Already Listed");
        paymentTokens[token] = true;
        emit TokenAdded(token);
    }

    /// @dev Remove the token address which can be used for the purchasing the NFT
    /// @param token - address of a ERC20 deployed contract
    function removeToken(address token) external onlyOwner {
        require(paymentTokens[token], "Token Not Listed");
        delete paymentTokens[token];
        emit TokenRemoved(token);
    }

    /// @dev Encode the Listing Struct
    /// @param _list - Listing value to be encoded
    function encodeStruct(Listing memory _list)
        public
        pure
        returns (bytes memory)
    {
        return abi.encode(_list);
    }

    /// @dev To get the sha3 equivalent of web3.js
    /// @param _data - encode bytes of Listing struct
    function hashSha3(bytes memory _data) internal pure returns (bytes32) {
        return keccak256(_data);
    }

    /// @dev Execute the ERC721 sale listed on website
    /// @param data - encoded bytes of listing struct
    /// @param msgHash - eth Signed Message Hash of Listing struct encoded bytes
    /// @param sellerSignature - signature of msg hash signed by seller
    /// @param adminSignature - signature of msg hash signed by hash code signer
    function _executePurchaseERC721(
        bytes memory data,
        bytes32 msgHash,
        bytes memory sellerSignature,
        bytes memory adminSignature
    ) internal {
        Listing memory list = abi.decode(data, (Listing));

        require(!_existsListingId(list.id), "Listing Already Executed");

        require(hashSha3(data) == msgHash, "Invalid msgHash");

        require(paymentTokens[list.buyToken], "Invalid Payment Token");

        require(list.user == IERC721(list.tokenContract).ownerOf(list.tokenId), "NFT is not owned by the seller");

        bytes32 encryptedHash = ECDSA.toEthSignedMessageHash(msgHash);

        require(
            SignatureChecker.isValidSignatureNow(
                list.user,
                encryptedHash,
                sellerSignature
            ), "Seller signature is invalid"
        );

        require(
            SignatureChecker.isValidSignatureNow(
                adminHashCodeSigner,
                encryptedHash,
                adminSignature
            ), "Admin signature is invalid"
        );

        require(list.amount > 0, "Amount Insufficient");
        uint256 price = list.price;
        if (list.buyToken == address(0)) {
            require(msg.value >= price, "Value Insufficient");

            uint256 calculatedroyaltyPercentage = price
                .mul(royaltyPercentage)
                .div(100);
            uint256 calculatedEthAdditionalPaymentPercentage = price
                .mul(ethAdditionalPaymentPercentage)
                .div(100);
            uint256 difference = calculatedroyaltyPercentage.add(
                calculatedEthAdditionalPaymentPercentage
            );

            payable(royaltyPercentageReciever).transfer(
                calculatedroyaltyPercentage
            );
            payable(additionalETHPaymentReciever).transfer(
                ethAdditionalPaymentPercentage
            );
            payable(list.user).transfer(price.sub(difference));
        } else {
            require(
                IERC20(list.buyToken).balanceOf(msg.sender) >= price,
                "Value Insufficient"
            );

            uint256 calculatedroyaltyPercentage = price
                .mul(royaltyPercentage)
                .div(100);

            IERC20(list.buyToken).transferFrom(
                msg.sender,
                list.user,
                price.sub(calculatedroyaltyPercentage)
            );
            IERC20(list.buyToken).transferFrom(
                msg.sender,
                royaltyPercentageReciever,
                calculatedroyaltyPercentage
            );
        }
        IERC721(list.tokenContract).safeTransferFrom(
            list.user,
            msg.sender,
            list.tokenId
        );

        isListingIdExecuted[list.id] = true;

        emit ListingExecuted(list);
    }

    /// @dev Execute the ERC721 sale listed on website
    /// @param data - encoded bytes of listing struct
    /// @param msgHash - eth Signed Message Hash of Listing struct encoded bytes
    /// @param sellerSignature - signature of msg hash signed by seller
    /// @param adminSignature - signature of msg hash signed by hash code signer
    function executePurchaseERC721(
        bytes memory data,
        bytes32 msgHash,
        bytes memory sellerSignature,
        bytes memory adminSignature
    ) external payable {
        _executePurchaseERC721(data, msgHash, sellerSignature, adminSignature);
    }

    /// @dev To with eth all eth from the contract
    function withdrawEth() public onlyOwner {
        require(address(this).balance > 0, "Amount Insufficient");
        payable(owner()).transfer(address(this).balance);
    }

    /// @dev To with eth all erc20 token from the contract
    /// @param token - address of the erc20 token
    function escapeERC20(address token) public onlyOwner {
        uint256 amount = IERC20(token).balanceOf(address(this));
        require(amount > 0, "Amount Insufficient");
        IERC20(token).transfer(msg.sender, amount);
    }

    /// @dev To with eth all erc721 token from the contract
    /// @param token - address of the erc721 token
    /// @param tokenId - tokenId of the erc721 token
    function escapeERC721(address token, uint256 tokenId) public onlyOwner {
        require(
            IERC721(token).ownerOf(tokenId) == address(this),
            "Invalid Token"
        );
        IERC721(token).transferFrom(address(this), msg.sender, tokenId);
    }

    /// @dev To with eth all erc1155 token from the contract
    /// @param token - address of the erc1155 token
    /// @param tokenId - tokenId of the erc1155 token
    /// @param amount - multiple of the erc1155 token
    function escapeERC1155(
        address token,
        uint256 tokenId,
        uint256 amount
    ) public onlyOwner {
        require(
            IERC1155(token).balanceOf(address(this), tokenId) >= amount,
            "Invalid Token"
        );
        require(amount > 0, "Amount Insufficient");
        IERC1155(token).safeTransferFrom(
            address(this),
            msg.sender,
            tokenId,
            amount,
            "0x03"
        );
    }
}

