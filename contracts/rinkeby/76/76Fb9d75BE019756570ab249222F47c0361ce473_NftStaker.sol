pragma solidity ^0.8.7;


// import "@openzeppelin/contracts/token/ERC721/ERC721.sol";

// is Ownable
contract NftStaker is Ownable {
    // nft地址
    IERC721 public parentNFT;

    struct StakeInfo {
        uint256 tokenId; // nft的ID
        uint256 timestamp; // 當前質押時間
    }

    // 玩家錢包 => nft資訊
    mapping(address => StakeInfo[]) public stakes2;

    // nft地址
    constructor(address _nftaddress) {
        // 0xb0100B9A74103176e0ac0b095C9e1F4Bb7ce4Cd7
        parentNFT = IERC721(_nftaddress); // Change it to your NFT contract addr
    }

    // 質押
    function stake(
        uint256 _tokenId
    ) public {

        require(checkstake(_tokenId) == -1,"it's already staking");

        parentNFT.safeTransferFrom(msg.sender, address(this), _tokenId);
        stakes2[msg.sender].push(StakeInfo(_tokenId, block.timestamp));
    } 

    // 解除質押
    function unstake(uint256 _tokenId) public {

        int256 index = checkstake(_tokenId);
        require(index >= 0,"not found staking nft");

        parentNFT.safeTransferFrom(address(this), msg.sender, stakes2[msg.sender][uint256(index)].tokenId);

        // 往前移並pop最後一個
        for (uint256 i = uint256(index); i < stakes2[msg.sender].length - 1; i++) {
                stakes2[msg.sender][i] = stakes2[msg.sender][i + 1];
        }
        stakes2[msg.sender].pop();
    }        

    // 把當前質押的nft還給玩家錢包 (只有管理者可操作) onlyOwner
    function unstakeToPlayer(address _from, uint256 _tokenId) public onlyOwner {
        require(stakes2[_from].length > 0,"no nft staking");

        int256 index = checkstake(_tokenId);
        require(index >= 0,"not found staking nft");

        parentNFT.safeTransferFrom(address(this), _from, stakes2[_from][uint256(index)].tokenId);

        // 往前移並pop最後一個
        for (uint256 i = uint256(index); i < stakes2[_from].length - 1; i++) {
                stakes2[_from][i] = stakes2[_from][i + 1];
        }
        stakes2[_from].pop();
    }

    // 確認是否有質押並回傳array的index 沒有的話回傳(-1)
    function checkstake(uint256 _tokenId) internal view returns (int256) {

         for (uint256 i = 0; i < stakes2[msg.sender].length; i++){
             if (stakes2[msg.sender][i].tokenId == _tokenId) {
                 return int256(i);
             }
         }

        return -1;
    }

    // 取得當前地址玩家的nft資訊
    function getStakeInfo(address _from) public view returns (StakeInfo[] memory) {
        return stakes2[_from];
    }


    function onERC721Received(
        address operator,
        address from,
        uint256 id,
        bytes calldata data
    ) external returns (bytes4) {
        return bytes4(keccak256("onERC721Received(address,address,uint256,bytes)"));
    }

}