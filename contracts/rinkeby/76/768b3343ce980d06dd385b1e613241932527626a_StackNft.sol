contract StackNft is Ownable, Pausable, IERC721Receiver {
    using SafeMath for uint256;
    using Dynamic for uint256[];
    

    struct Balance {
        uint16 numberOfTokens;
        uint64 blockNumber;
        uint176 baseBalance;
    }

    mapping(address => uint256[]) tokensByOwner;
    mapping(uint256 => address) public ownerOf;

    mapping(address => Balance) balances;

    address stackable;
    address rewardToken;

    uint256 public rate;

    function pause() public onlyOwner {
        _pause();
    }

    function unpause() public onlyOwner {
        _unpause();
    }

    /* STAKING MECHANICS */

    function setStackable(address _stackable) external onlyOwner {
        stackable = _stackable;
    }

    // Set a multiplier for how many tokens to earn each time a block passes.
    function setRate(uint256 _rate) external onlyOwner {
        rate = _rate;
    }

    function setRewardToken(address _rewardToken) external onlyOwner {
        rewardToken = _rewardToken;
    }

    function getTokensByOwner(address _owner) external view returns(uint256[] memory) {
        return tokensByOwner[_owner];
    }

    function _getBalance(address _address) internal view returns(uint256) {
        Balance storage balance = balances[_address];
        uint256 blocks = block.number - uint256(balance.blockNumber);
        uint256 numberOfTokens = uint256(balance.numberOfTokens);

        return uint256(balance.baseBalance) + blocks.mul(numberOfTokens).mul(rate);
    }

    function _setBalance(address _address, uint256 _numberOfTokens) internal returns(uint256) {
        Balance storage balance = balances[_address];
        uint256 baseBalance = _getBalance(_address);
        balance.baseBalance = uint176(baseBalance);
        balance.numberOfTokens = uint16(_numberOfTokens);
        balance.blockNumber = uint64(block.number);

        return baseBalance;
    }

    function _zeroBalance(address _address) internal {
        Balance storage balance = balances[_address];
        balance.baseBalance = uint176(0);
    }

    function deposit(uint256[] memory tokenIds) external whenNotPaused {

        for (uint256 i = 0; i < tokenIds.length; i++) {
            IERC721(stackable).safeTransferFrom(
                _msgSender(),
                address(this),
                tokenIds[i],
                ""
            );
            tokensByOwner[_msgSender()].add(tokenIds[i]);
            ownerOf[tokenIds[i]] = _msgSender();
        }
        _setBalance(_msgSender(), tokensByOwner[_msgSender()].length);

    }

    function withdraw(uint256[] memory tokenIds) external whenNotPaused {
        for (uint256 i = 0; i < tokenIds.length; i++) {
            require(ownerOf[tokenIds[i]] == _msgSender(), "Only owner can withdraw NFT");
            
            delete ownerOf[tokenIds[i]];
            
            tokensByOwner[_msgSender()].removeByValue(tokenIds[i]);

            IERC721(stackable).safeTransferFrom(
                address(this),
                _msgSender(),
                tokenIds[i],
                ""
            );
        }
        _setBalance(_msgSender(), tokensByOwner[_msgSender()].length);
    }

    function claimRewards() external whenNotPaused {
        uint256 balance = _setBalance(_msgSender(), tokensByOwner[_msgSender()].length);
        _zeroBalance(_msgSender());

        if (balance > 0) {
            IERC20(rewardToken).transfer(_msgSender(), balance);
        }
    }

        //withdrawal function.
    function withdrawTokens() external onlyOwner {
        uint256 tokenSupply = IERC20(rewardToken).balanceOf(address(this));
        IERC20(rewardToken).transfer(msg.sender, tokenSupply);
    }


    function onERC721Received(
        address,
        address,
        uint256,
        bytes calldata
    ) external pure override returns (bytes4) {
        return IERC721Receiver.onERC721Received.selector;
    }
}