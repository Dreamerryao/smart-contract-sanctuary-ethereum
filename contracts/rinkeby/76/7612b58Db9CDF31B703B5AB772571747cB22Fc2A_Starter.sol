    address public supply;
    bool public completed;
    uint public stage;
    uint public totalPurchasedCurrency;
    // uint public totalPurchasedCurrencyForFirst;
    // uint public totalPurchasedCurrencyForSecond;
    // uint public totalPurchasedCurrencyForThird;
    uint public totalReleasedCurrency;
    mapping (uint => uint) public totalPurchasedCurrencyOfStage;
    mapping (address => mapping( uint => uint)) public purchasedCurrencyOf;
    mapping (uint => uint) public rateOfStage;
    mapping (uint => uint) public suppliedVolumeOfStage;

	constructor(address governor_, address currency_, address supply_ ) public {
        governor = governor_;
        stage =1;
        //USDT
        currency = currency_;
        //ATK
        supply = supply_;

        rateOfStage[1] = 150000000000000000;
        rateOfStage[2] = 200000000000000000;
        rateOfStage[3] = 250000000000000000;
        suppliedVolumeOfStage[1]  = 300000 * 1e18;
        suppliedVolumeOfStage[2] =  200000 * 1e18;
        suppliedVolumeOfStage[3] =  100000 * 1e18;
    }

    function currencyStatus() public view returns(uint stage_, uint volume, uint rate){
        volume = suppliedVolumeOfStage[stage].sub( totalPurchasedCurrencyOfStage[stage].mul(1e18).div(rateOfStage[stage]).mul(10**uint256(IERC20(supply).decimals())).div(10**uint256(IERC20(currency).decimals()) ));
        rate = rateOfStage[stage];
        stage_ = stage;
    }
    function status() public view returns(uint stage_, uint suppliedVolume_, uint releasedVolume_, uint rate_){
        releasedVolume_ = totalPurchasedCurrencyOfStage[stage].mul(1e18).div(rateOfStage[stage]).mul(10**uint256(IERC20(supply).decimals())).div(10**uint256(IERC20(currency).decimals()));
        rate_ = rateOfStage[stage];
        suppliedVolume_ = suppliedVolumeOfStage[stage];
        stage_ = stage;

    }
    function purchase(uint amount) external {
        require(!completed, 'completed');
        require(amount >=10**uint256(IERC20(currency).decimals())*10,'less than max amount');
        (uint stage_, uint volume, uint rate) = currencyStatus();
        require(stage_ !=0, 'error');
        uint releasedCurrency_ = 0;
        uint256 leftValue_ = volume.mul(rate).div(1e18).mul(10**uint256(IERC20(currency).decimals())).div(10**uint256(IERC20(supply).decimals()));
        for(uint i = stage_ + 1; i<=3; i++){
            leftValue_ = leftValue_.add(suppliedVolumeOfStage[i].mul(rateOfStage[i]).div(1e18).mul(10**uint256(IERC20(currency).decimals())).div(10**uint256(IERC20(supply).decimals())));
        }
        // require(leftValue_ <= amount, 'more than max amount');
        if(leftValue_ <= amount){
            amount = leftValue_;
            completed = true;
        }
        uint amount_ = amount;

        for(uint i = stage_; i<=3; i++){
            if(volume <= amount_.mul(1e18).div(rateOfStage[i]).mul(10**uint256(IERC20(supply).decimals())).div(10**uint256(IERC20(currency).decimals()))){
                purchasedCurrencyOf[msg.sender][i] = purchasedCurrencyOf[msg.sender][i].add(volume.mul(rateOfStage[i]).div(1e18).mul(10**uint256(IERC20(currency).decimals())).div(10**uint256(IERC20(supply).decimals())));
                totalPurchasedCurrencyOfStage[i] = totalPurchasedCurrencyOfStage[i].add(volume.mul(rateOfStage[i]).div(1e18).mul(10**uint256(IERC20(currency).decimals())).div(10**uint256(IERC20(supply).decimals())));
                releasedCurrency_ = releasedCurrency_.add(volume);
                amount_ = amount_.sub(volume.mul(rateOfStage[i]).div(1e18).mul(10**uint256(IERC20(currency).decimals())).div(10**uint256(IERC20(supply).decimals())));
                volume = suppliedVolumeOfStage[i+1];
                stage++;
            }else{
                purchasedCurrencyOf[msg.sender][i] = purchasedCurrencyOf[msg.sender][i].add(amount_);
                totalPurchasedCurrencyOfStage[i] = totalPurchasedCurrencyOfStage[i].add(amount_);
                releasedCurrency_ = releasedCurrency_.add(amount_.mul(1e18).div(rateOfStage[i]).mul(10**uint256(IERC20(supply).decimals())).div(10**uint256(IERC20(currency).decimals())));
                break;
            }
         }
        IERC20(supply).safeTransfer( msg.sender,releasedCurrency_);

        IERC20(currency).safeTransferFrom(msg.sender, governor, amount);
        totalPurchasedCurrency = totalPurchasedCurrency.add(amount);
        totalReleasedCurrency = totalReleasedCurrency.add(releasedCurrency_);
        emit Purchase(msg.sender, amount, totalPurchasedCurrency);
    }
