        uint leftValue_ = 0;
        for(uint i = stage; i<=3; i++){
            leftValue_ = leftValue_.add(suppliedVolumeOfStage[i].mul(rateOfStage[i]).div(1e18).mul(10**uint256(IERC20(currency).decimals())).div(10**uint256(IERC20(supply).decimals())));
        }
        _leftAmount = leftValue_;
    }
