pragma solidity 0.6.12;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/SafeERC20.sol";
import "@openzeppelin/contracts/math/SafeMath.sol";
import "./interfaces/IUniswapV2Router.sol";

// Note that this pool has no minter key of MORRA (rewards).
// Instead, the governance will call MORRA distributeReward method and send reward to this pool at the beginning.
contract MorraGenesisPresale {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    // governance
    address public operator;
    IUniswapV2Router public router;

    // Info of each user.
    struct UserInfo {
        uint256 amount; // How many tokens the user has provided.
        uint256 reward; // Reward debt. See explanation below.
    }

    // Info of each pool.
    struct PoolInfo {
        IERC20 token; // presale with token
        uint256 totalDeposits;
        uint256 price; // price for 1 ether
    }

    IERC20 public morra;

    // Info of each pool.
    PoolInfo[] public poolInfo;

    uint256 public price = 0.8 ether;
    uint256 maxUint256 = ~uint256(0);
    uint256 liquidityPercent = 60;

    address public WETH;

    // Info of each user that stakes LP tokens.
    mapping(uint256 => mapping(address => UserInfo)) public userInfo;

    // Total allocation points. Must be the sum of all allocation points in all pools.
    uint256 public totalAllocPoint = 0;

    // The time when MORRA mining starts.
    uint256 public poolStartTime;

    // The time when MORRA mining ends.
    uint256 public poolEndTime;

    // TESTNET
    uint256 public tombPerSecond = 3.0555555 ether; // 11000 MORRA / (1h * 60min * 60s)
    uint256 public runningTime = 24 hours; // 1 hours
    uint256 public constant TOTAL_REWARDS = 11000 ether;
    // END TESTNET

    // MAINNET
    // uint256 public tombPerSecond = 0.11574 ether; // 10000 MORRA / (24h * 60min * 60s)
    // uint256 public runningTime = 1 days; // 1 days
    // uint256 public constant TOTAL_REWARDS = 10000 ether;
    // END MAINNET

    event Deposit(address indexed user, uint256 indexed pid, uint256 amount);
    event Withdraw(address indexed user, uint256 indexed pid, uint256 amount);
    event EmergencyWithdraw(
        address indexed user,
        uint256 indexed pid,
        uint256 amount
    );
    event RewardPaid(address indexed user, uint256 amount);

    constructor(
        address _morra,
        uint256 _poolStartTime,
        IUniswapV2Router _router
    ) public {
        // require(block.timestamp < _poolStartTime, "late");
        if (_morra != address(0)) morra = IERC20(_morra);
        // poolStartTime = _poolStartTime;
        router = _router;
        poolStartTime = block.timestamp;
        poolEndTime = poolStartTime + runningTime;
        operator = msg.sender;
        WETH = router.WETH();
        morra.approve(address(router), maxUint256);
        poolInfo.push(PoolInfo({token: IERC20(WETH), totalDeposits: 0, price: 0}));
    }

    modifier onlyOperator() {
        require(
            operator == msg.sender,
            "MorraGenesisPool: caller is not the operator"
        );
        _;
    }

    function checkPoolDuplicate(IERC20 _token) internal view {
        uint256 length = poolInfo.length;
        for (uint256 pid = 0; pid < length; ++pid) {
            require(
                poolInfo[pid].token != _token,
                "MorraGenesisPool: existing pool?"
            );
        }
    }

    function add(IERC20 token) external onlyOperator {
        checkPoolDuplicate(token);
        token.approve(address(router), maxUint256);
        poolInfo.push(PoolInfo({token: token, totalDeposits: 0, price: 0}));
    }

    function deposit(uint256 _pid, uint256 _amount) external payable {
        require(poolStartTime < block.timestamp, "Pool not started");
        require(poolEndTime > block.timestamp, "Pool Ended");
        address _sender = msg.sender;
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][_sender];
        if (_pid == 0) {
            require(msg.value == _amount);
        } else {
            pool.token.safeTransferFrom(_sender, address(this), _amount);
        }
        pool.totalDeposits += _amount;
        user.amount += _amount;
    }

    function addLiquidityPresale(uint256 pid) internal {
        PoolInfo storage pool = poolInfo[pid];
        uint256 amountTokenDesired = (pool.totalDeposits * liquidityPercent) /
            100;
        if (pid == 0) {
            // morraDesired = amountTokenDesired; // 1 morra = 1 eth
            (uint amountToken, uint amountETH, ) = router.addLiquidityETH{value: amountTokenDesired}(
                address(morra),
                amountTokenDesired,
                0,
                0,
                address(this),
                block.timestamp
            );
            pool.price = 1 ether * amountToken / amountETH;
        } else {
            address[] memory path = new address[](2);
            path[0] = WETH;
            path[1] = address(pool.token);
            uint256[] memory amounts = router.getAmountsOut(1 ether, path);
            uint256 morraAmount = (amountTokenDesired * amounts[0]) /
                amounts[1];
            (uint amountA, uint amountB, ) = router.addLiquidity(
                address(morra),
                address(pool.token),
                morraAmount,
                amountTokenDesired,
                0,
                0,
                address(this),
                block.timestamp
            );
            pool.price = 1 ether * amountA / amountB;
        }
    }

    function completePresale() external onlyOperator {
        // require(poolEndTime < block.timestamp, "Pool not finished");
        for (uint256 i = 0; i < poolInfo.length; i++) {
            addLiquidityPresale(i);
        }
    }

    function claimPresale(uint256 pid) external {
        // require(poolEndTime < block.timestamp, "Pool not finished");
        PoolInfo storage pool = poolInfo[pid];
        UserInfo storage user = userInfo[pid][msg.sender];
        if(user.amount > 0 && user.reward == 0) {
            user.reward = user.amount * pool.price / price;
            morra.transfer(msg.sender, user.reward);
        }
        user.amount = 0;
    }

    function setPoolEndTime(uint256 _poolEndTime) external onlyOperator {
        poolEndTime = _poolEndTime;
    }

    // Safe MORRA transfer function, just in case if rounding error causes pool to not have enough TOMBs.
    function safeMorraTransfer(address _to, uint256 _amount) internal {
        uint256 _morraBalance = morra.balanceOf(address(this));
        if (_morraBalance > 0) {
            if (_amount > _morraBalance) {
                morra.safeTransfer(_to, _morraBalance);
            } else {
                morra.safeTransfer(_to, _amount);
            }
        }
    }

    function setOperator(address _operator) external onlyOperator {
        operator = _operator;
    }

    function governanceRecoverUnsupported(
        IERC20 _token,
        uint256 amount,
        address to
    ) external onlyOperator {
        if (block.timestamp < poolEndTime + 90 days) {
            // do not allow to drain core token (MORRA or lps) if less than 90 days after pool ends
            require(_token != morra, "morra");
            uint256 length = poolInfo.length;
            for (uint256 pid = 0; pid < length; ++pid) {
                PoolInfo storage pool = poolInfo[pid];
                require(_token != pool.token, "pool.token");
            }
        }
        _token.safeTransfer(to, amount);
    }

    function recoverEth(address payable to) external onlyOperator {
        to.transfer(address(this).balance);
    }
}

