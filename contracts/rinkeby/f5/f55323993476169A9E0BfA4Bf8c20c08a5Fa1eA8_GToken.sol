        require(
            whitelistReceivers[_receiver],
            "GToken: only whitelisted receiver allowed"
        );
        _;
    }

    function setWhitelistReceiver(
        address _newWhitelisteReceiver,
        bool _isAllowed
    ) external onlySuperAdmin(adminRegistry, msg.sender) {
        bool prevState = whitelistReceivers[_newWhitelisteReceiver];
        require(
            _newWhitelisteReceiver != address(0),
            "GToken: address not allowed"
        );
        require(prevState != _isAllowed, "GToken: already in desired state");
        whitelistReceivers[_newWhitelisteReceiver] = _isAllowed;
    }

    function getMaxTotalSupply() public view returns (uint256) {
        return spToken.totalSupply();
    }

    function mint(address account, uint256 amount) external onlyTokenMarket {
        uint256 currentTotalSupply = totalSupply();
        require(
            getMaxTotalSupply() >= currentTotalSupply + amount,
            "Maximum supply exceeded!"
        );
        _mint(account, amount);
        //always keep apprroval with token market to burn in case of liquidation
        uint256 currentAllowance = this.allowance(account, owner());
        _approve(account, owner(), currentAllowance + amount);
    }

