        _symbol = symbol_;
        spToken = IERC20(_spToken);
        spTokenExtras = IERC20Extras(_spToken);
        tokenMarketContract = _tokenMarketContract;
        liquidatorContract = _liquidatorContract;
        adminRegistry = _adminRegistry;

        whitelistReceivers[_liquidatorContract] = true;
        whitelistReceivers[_tokenMarketContract] = true;
        whitelistReceivers[address(0)] = true;
        whitelistReceivers[address(this)] = true;
    }

