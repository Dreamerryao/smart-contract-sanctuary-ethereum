import "./Token.sol";

error AlreadyInFinalPhase();
error InsufficientFunds();
error ICONotLive();
error ICOPaused();
error AlreadyInitialized();
error NotAllowlisted();
error ICOFinished();
error WithdrawNotAllowed();
error ContributionTooLarge();

contract ICO {
    event NewContribution(address indexed contributor, uint256 amount);
    event ContributorWithdrawal(address indexed contributor, uint256 amount);
    event PhaseAdvanced(uint256 phase);
    event ProjectInitialized();
    event ICOPauseToggled(bool pause);

    SPCToken spcToken;

    uint256 public constant RATE = 5;
    uint256 public constant SEED_INDIVIDUAL_CAP = 1_500 ether;
    uint256 public constant SEED_TOTAL_CAP = 15_000 ether;
    uint256 public constant GENERAL_INDIVIDUAL_CAP = 1_000 ether;
    //Final_cap is same for general phase and open.
    uint256 public constant FINAL_CAP = 30_000 ether;

    address public immutable owner;
    bool public paused;

    struct User {
        bool allowlist;
        uint256 withdraw_balance;
    }

    mapping(address => User) public user;
    uint256 public totalEtherRaised; //total eth contributed
    bool public initialized; //start the ico manually

    enum Phase {
        SEED,
        GENERAL,
        OPEN
    }

    Phase public phase;

    constructor(address _spaceCoinContract, address[] memory _allowlist) {
        owner = msg.sender;
        paused = true;
        spcToken = SPCToken(_spaceCoinContract);

        for (uint256 i = 0; i < _allowlist.length; i++) {
            user[_allowlist[i]] = User(true, 0);
        }
    }

    /// Prevents contributions
    /// @dev contract must be funded and initialized with exact balance
    modifier pausable() {
        if (!initialized) revert ICONotLive();
        if (paused) revert ICOPaused();
        _;
    }

    /// Round Limits
    modifier limited() {
        uint256 newTotal = totalEtherRaised + msg.value;
        uint256 personalContributed = user[msg.sender].withdraw_balance / RATE;
        uint256 newPersonalContributed = personalContributed + msg.value;

        if (totalEtherRaised == FINAL_CAP) revert ICOFinished();
        if (newTotal > FINAL_CAP) revert ContributionTooLarge();

        if (phase == Phase.SEED) {
            if (!user[msg.sender].allowlist) revert NotAllowlisted();

            if (newPersonalContributed > SEED_INDIVIDUAL_CAP)
                revert ContributionTooLarge();

            if (newTotal > SEED_TOTAL_CAP) revert ContributionTooLarge();
        }
        if (phase == Phase.GENERAL) {
            if (newPersonalContributed > GENERAL_INDIVIDUAL_CAP)
                revert ContributionTooLarge();
        }
        _;
    }

    function contribute() external payable pausable limited {
        uint256 newSpaceTokensSold = msg.value * RATE;

        user[msg.sender].withdraw_balance += newSpaceTokensSold;

        totalEtherRaised += msg.value;

        emit NewContribution(msg.sender, msg.value);
    }

    function advancePhase() public {
        if (msg.sender != owner) revert Unauthorized();
        if (phase == Phase.OPEN) revert AlreadyInFinalPhase();
        phase = Phase(uint256(phase) + 1);

        emit PhaseAdvanced(uint256(phase));
    }

    function togglePause() public {
        if (msg.sender != owner) revert Unauthorized();
        paused = !paused;

        emit ICOPauseToggled(paused);
    }

    /// Run once to start ICO
    /// @dev never send more than the exact amount of SPC need for ico to the contract
    function initialize() public {
        if (msg.sender != owner) revert Unauthorized();
        if (initialized) revert AlreadyInitialized();

        if (spcToken.balanceOf(address(this)) != (FINAL_CAP * RATE))
            revert InsufficientFunds();
        paused = false;
        initialized = true;

        emit ProjectInitialized();
    }

    /// Open phase withdrawals for all contributors
    /// @dev contract must be funded and initialized with exact balance
    function contributorWithdraw(address _to) external {
        if (phase != Phase.OPEN) revert WithdrawNotAllowed();

        uint256 spcAmount = user[msg.sender].withdraw_balance;
        if (spcAmount == 0) revert WithdrawNotAllowed();

        user[msg.sender].withdraw_balance = 0;
        spcToken.transfer(_to, spcAmount);

        emit ContributorWithdrawal(_to, spcAmount);
    }
}

