pragma solidity ^0.8.9;

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";

error Unauthorized();

contract SPCToken is ERC20 {
    event TaxingToggled(bool taxing);

    address public immutable owner;
    address public immutable treasury;
    bool public taxing;

    uint256 public constant TAX_RATE = 2;
    uint256 public constant SUPPLY = 500_000 * 10**18;

    /// Inititiates contract with treasury
    /// @param _treasury The address that will own all initial tokens
    /// @dev we recommend this be a gnosis safe or similar
    constructor(address _treasury) ERC20("SpaceCoin", "SPC") {
        owner = msg.sender;
        treasury = _treasury;
        taxing = false;
        _mint(treasury, SUPPLY);
    }

    /// Transfers with taxes
    /// @param to The address to transfer to
    /// @param amount How much to transfer
    /// @dev we don't recommend taxing during ICO
    function transfer(address to, uint256 amount)
        public
        override
        returns (bool)
    {
        uint256 tax = 0;

        if (taxing) {
            tax = (amount / 100) * TAX_RATE;
            super.transfer(treasury, tax);
        }

        super.transfer(to, amount - tax);
        return true;
    }

    function toggleTax() public {
        if (msg.sender != owner) revert Unauthorized();
        taxing = !taxing;
        emit TaxingToggled(taxing);
    }
}

