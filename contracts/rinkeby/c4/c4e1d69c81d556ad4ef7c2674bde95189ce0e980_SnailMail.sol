/*//////////////////////////////////////////////////////////////
                            ERRORS
//////////////////////////////////////////////////////////////*/

error SnailMailNotActive();
error MintCanNotAffordStamp();

error PostcardMessageUndefined();
error PostcardMessageLongerThan64Characters();

error WithdrawTransferFailed();

contract SnailMail is Ownable, PostcardERC721, IERC2981, ReentrancyGuard {
    /* ========== DEPENDENCIES ========== */
    using SafeERC20 for IERC20;
    using FixedPointMathLib for uint256;
    using Strings for uint256;

    /* ====== CONSTANTS ====== */

    uint64 public constant STAMP_COST = 0.01 ether;

    // Owners
    address payable private immutable _owner1;
    address payable private immutable _owner2;

    /* ====== VARIABLES ====== */

    string public DESCRIPTION = "Snail mail is so fast, that it's fast.";
    
    bool public isSnailMailActive;

    /* ====== MODIFIERS ====== */

    /*//////////////////////////////////////////////////////////////
                                Modifiers
    //////////////////////////////////////////////////////////////*/

    modifier tokenExists(uint256 id) {
        if (_ownerships[id].receiver == address(0)) 
            revert TokenDoesNotExist();
        _;
    }

    /* ====== CONSTRUCTOR ====== */

    constructor(address owner1_, address owner2_) PostcardERC721("Snail Mail", "POST") {
        _owner1 = payable(owner1_);
        _owner2 = payable(owner2_);
    }

    receive() payable external {}

    function mint(address receiver_, string memory message_)
    external payable
    nonReentrant
    {
        if (msg.value < STAMP_COST) 
            revert MintCanNotAffordStamp();
        if (!isSnailMailActive) 
            revert SnailMailNotActive();
        if (bytes(message_).length == 0) 
            revert PostcardMessageUndefined();
        if (bytes(message_).length > 64) 
            revert PostcardMessageLongerThan64Characters();

        // Mint NFT
        _safeMint(
            msg.sender,         // Who the postcard is from
            receiver_,          // Who the postcard is sent to
            
            message_,           // Message for the postcard

            _currentIndex++     // The tokenId of the postcard
        );
    }

    function mintPromotional(address sender_, address receiver_, string memory message_)
    external 
    onlyOwner
    {
        if (bytes(message_).length == 0) 
            revert PostcardMessageUndefined();
        if (bytes(message_).length > 64) 
            revert PostcardMessageLongerThan64Characters();

        _safeMint(
            sender_,            // Who the postcard is from
            receiver_,          // Who the postcard is sent to
            
            message_,           // Message for the postcard

            _currentIndex++     // The tokenId of the postcard
        );
    }

    /* ========== FUNCTION ========== */

    function setSnailMailOpen(bool isSnailMailActive_) external onlyOwner {
        isSnailMailActive = isSnailMailActive_;
    }

    function setDescription(string memory description_) external onlyOwner {
        DESCRIPTION = description_;
    }

    function withdraw() public {
        uint256 split_ = address(this).balance / 3;

        bool success_;
        (success_,) = _owner1.call{value : split_}("");
        if (!success_) revert WithdrawTransferFailed();

        (success_,) = _owner2.call{value : split_}("");
        if (!success_) revert WithdrawTransferFailed();
    }

    function withdrawTokens(IERC20 token) public {
        uint256 balance_ = token.balanceOf(address(this));
        uint256 split_ = balance_ / 3;

        token.safeTransfer(_owner1, split_);
        token.safeTransfer(_owner2, split_);
    }

    function destroy() external onlyOwner {
        selfdestruct(payable(msg.sender));
    }

    // ============ FUNCTION OVERRIDES ============

    function supportsInterface(bytes4 interfaceId_) 
    public view virtual override(PostcardERC721, IERC165) 
    returns (bool) 
    {
        return 
            interfaceId_ == type(IERC2981).interfaceId || 
            super.supportsInterface(interfaceId_);
    }

    /**
     * @dev See {IERC721Metadata-tokenURI}.
     */
    function tokenURI(uint256 tokenId_) public view virtual override tokenExists(tokenId_) returns (string memory) {
        TokenOwnership memory owner_ = _ownerships[tokenId_];
        // (address sender_, address receiver_, string memory message_) = _ownerships[tokenId_];
        return string(
            abi.encodePacked(
                "data:application/json;base64,",
                base64(
                    abi.encodePacked(
                        '{"name":"', tokenId_.toString(),
                        '", "description": "', DESCRIPTION, '", "traits": [{"trait_type": "Sender", "value": "',
                        addressToString(owner_.sender),
                        '"}, {"trait_type": "Receiver", "value": "',
                        addressToString(owner_.receiver),
                        '"}], "image":"data:image/svg+xml;base64,',
                        base64(
                            abi.encodePacked(
                                '<svg xmlns="http://www.w3.org/2000/svg" width="700" height="700"><rect x="0" y="0" width="700" height="700" fill="black"/> <text x="50%" y="388" text-anchor="middle" font-weight="bold" font-size="77px" fill="white">',
                                owner_.message,
                                '</text></svg>'
                            )
                        ),
                        '"}'
                    )
                )
            )
        );
    }

    /**
     * @dev See {IERC165-royaltyInfo}.
     */
    function royaltyInfo(uint256 tokenId_, uint256 salePrice_)
    external view override
    tokenExists(tokenId_)
    returns (address receiver, uint256 royaltyAmount)
    {
        return (address(this), salePrice_.mulDivDown(75, 1000));
    }

    //  Base64 by Brecht Devos - <[emailÂ protected]>
    //  Provides a function for encoding some bytes in base64
    string internal constant TABLE = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789+/';

    function base64(bytes memory data) internal pure returns (string memory) {
        if (data.length == 0) return '';

        // load the table into memory
        string memory table = TABLE;

        // multiply by 4/3 rounded up
        uint256 encodedLen = 4 * ((data.length + 2) / 3);

        // add some extra buffer at the end required for the writing
        string memory result = new string(encodedLen + 32);

        assembly {
            // set the actual output length
            mstore(result, encodedLen)

            // prepare the lookup table
            let tablePtr := add(table, 1)

            // input ptr
