/**
 * @dev A token vesting contract for a generic ERC20 token
 *
 * Useful for more complex vesting schedules such as "seed investor V gets X tokens released over Y cycles each lasting Z blocks" 
 * 
 * Mikael J
 */
contract Vesting is Ownable {
    using SafeERC20 for IERC20;

    // ERC20 token contract being held
    IERC20 private _token;

    struct beneficiaryInformation {
        uint256 _cycleValue;
        uint256 _lockCycleTime;
        uint256 _cyclesRemaining;
        uint256 _nextCycleUnlock;
    }

    // stores token release information for each beneficiary
    mapping(address => beneficiaryInformation) private  _beneficiaries;
    
    // timestamp when vesting period begins
    uint256 private immutable _vestingStartDate;
    

    constructor() {
        _token = IERC20(0xc08e94e12ca1357DF36F3c16c3A1df5F84c7B801);
        _vestingStartDate = block.timestamp + 1 weeks;
    }

    /**
     * @return the token being held.
     */
    function token() public view returns (IERC20) {
        return _token;
    }
    
    /**
     * populates the values in the beneficiaryInformation struct containing token vesting information for the beneficiary.
     */
    function addBeneficiary(address beneficiary, uint256 cycleValue, uint256 lockCycleTime, uint256 cyclesRemaining) public onlyOwner {
        require(block.timestamp <= _vestingStartDate, "Vesting: current time is after vesting initialization period");
        _beneficiaries[beneficiary]._cycleValue = cycleValue;
        _beneficiaries[beneficiary]._cyclesRemaining = cyclesRemaining;
        _beneficiaries[beneficiary]._lockCycleTime = lockCycleTime * 1 weeks;
        _beneficiaries[beneficiary]._nextCycleUnlock = lockCycleTime + _vestingStartDate;

    }
    
    /**
     * @return the held balance of the beneficiary.
     */
    function beneficiaryBalance(address beneficiary) public view returns (uint256) {
        return _beneficiaries[beneficiary]._cycleValue * _beneficiaries[beneficiary]._cyclesRemaining;
    }

    /**
     * @return the time when the next cycles tokens are released.
     */
    function releaseTime(address beneficiary) public view returns (uint256) {
        return _beneficiaries[beneficiary]._nextCycleUnlock;
    }

    /**
     * @notice Transfers tokens for this cycle held by vesting contract to the beneficiary.
     */
    function claim() public {
        require(_beneficiaries[msg.sender]._cyclesRemaining > 0, "Vesting: you have no tokens to receive");
        require(block.timestamp >= releaseTime(msg.sender), "Vesting: current time is before release time");
        _beneficiaries[msg.sender]._cyclesRemaining -= 1;
        _beneficiaries[msg.sender]._nextCycleUnlock += _beneficiaries[msg.sender]._lockCycleTime;
        token().safeTransfer(msg.sender, _beneficiaries[msg.sender]._cycleValue);
    }
}

