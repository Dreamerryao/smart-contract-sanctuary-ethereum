pragma solidity ^0.8.2;

import './Project.sol';

contract factory {


    address[] public allProjects;
    mapping(bytes32 => bool) projectExists;

    event ProjectCreated(bytes32 indexed name, bytes32 indexed projectId, address project, uint allProjects);

    constructor() {
    }

    function allProjectsLength() external view returns (uint) {
        return allProjects.length;
    }

    function createProject(bytes32 name, bytes32 projectId) external {
        
        require(!projectExists[projectId]);
        address project = address (new Project(name, projectId, msg.sender));

        allProjects.push(project);
        projectExists[projectId] = true;
        emit ProjectCreated(name, projectId, project, allProjects.length);
    }

}

pragma solidity ^0.8.2;

import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract Project is Ownable, AccessControl {

   

    bytes32 public constant DISTRIBUTOR_ROLE = keccak256("DISTRIBUTOR_ROLE");
    uint256 TOTAL_REVENUE;
    bytes32 PROJECT_ID;
    bytes32 PROJECT_NAME;
    uint256 SETTLED_BALANCE;
    // DISTRIBUTOR_COUNT? USER_COUNT?

    event REVENUE_GENERATED( uint256 indexed amount, address indexed distributor, bytes32 indexed projectId );
    event SHARE_PAID(uint256 indexed amount, address indexed userId);
    event USER_ADDED(address indexed id, bytes32 indexed name, bytes32 organization, uint256 indexed quota);
    event DISTRIBUTION_RIGHT_AWARDED(address indexed id, bytes32 indexed name); // TODO: redeploy -  deployed contract has the event = DISTRIBUTION_RIGHT_AWARDED(address indexed id, string indexed name)

    struct ProjectInfo {
        bytes32 _name;
        bytes32 _id;
    }

    struct User {
        bytes32 _name;
        bytes32 _orgnization;
        uint quota; // for simplicty we are using quota as uint here, this will change in before deployment maybe use bassis Point
        address _id;

        //TODO: we will get all users per project from the graph.
    }

    struct Distributor {
        bytes32 _name;
        address _id;

        //TODO: we will get total distributors per project from graph

    }


    mapping(address => User) users;
    mapping(address => Distributor) distributors;

    constructor(bytes32 name, bytes32 id, address _projectManager) {
        // uniqueness check must be performed before creating new projects

         // set team fee at time of construction?
        PROJECT_ID = id;
        PROJECT_NAME = name;
        _grantRole(DEFAULT_ADMIN_ROLE, _projectManager);
        _transferOwnership(_projectManager);
        TOTAL_REVENUE = 0;
    }

    function addDistributor(address accountId, bytes32 name) public onlyOwner {
        
        distributors[accountId] = Distributor(name,accountId);
        
        _grantRole(DISTRIBUTOR_ROLE, accountId);
        
        emit DISTRIBUTION_RIGHT_AWARDED(accountId, name);

    }

    function addUser(bytes32 _name, bytes32 _org, uint256 _quota, address _id) public onlyOwner {

        users[_id] = User(_name,_org,_quota,_id);
        emit USER_ADDED(_id, _name, _org, _quota);
    }

    
    function addRevenue(uint256 amount) public onlyRole(DISTRIBUTOR_ROLE) {
        TOTAL_REVENUE = SafeMath.add(TOTAL_REVENUE, amount);
        emit REVENUE_GENERATED(amount, msg.sender, PROJECT_ID);
    }


     function payUsers(uint256 amount) public onlyOwner {
        uint256 UNSETTLED_BALANCE = SafeMath.sub(TOTAL_REVENUE, SETTLED_BALANCE);
        require(UNSETTLED_BALANCE > 0  && amount < UNSETTLED_BALANCE);

        //for-loop, keep looping until distributed to all users, each iteration emits SHARE_PAID event

        uint256 user_share_fatcor = SafeMath.mul(amount, users[owner()].quota); // TODO: fix this, this will not claculate real percentage and real share
        uint256 user_share = SafeMath.div(user_share_fatcor, 100);

        emit SHARE_PAID(user_share, owner());

        //end loop

        SETTLED_BALANCE = SafeMath.add(SETTLED_BALANCE, amount);
    }



}

