pragma solidity >=0.7.4 <=0.8.9;

import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol";
import '@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol';
import '@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol';

import "../interfaces/IFactory.sol";
import "./Common1155.sol";
import "../utils/Strings.sol";

contract Factory1155 is IFactory, Initializable, UUPSUpgradeable, OwnableUpgradeable, ReentrancyGuardUpgradeable {
  using Strings for string;
  using SafeMath for uint256;

  address public proxyRegistryAddress;
  address public nftAddress;
  string internal baseMetadataURI = "https://api.nftsky.io/public/erc1155/";
  uint256 constant UINT256_MAX = ~uint256(0);

  /**
   * Optionally set this to a small integer to enforce limited existence per option/token ID
   * (Otherwise rely on sell orders on NFTSKY, which can only be made by the factory owner.)
   */
  uint256 constant SUPPLY_PER_TOKEN_ID = UINT256_MAX;

  /**
   * Three different options for minting MyCollectibles
   * Commercial & Exclusive are stored for future
   */
  enum Option {
    Basic,
    Premium,
    Exclusive,
    Commercial,
    External
  }
  uint256 constant NUM_OPTIONS = 5;
  mapping (uint256 => uint256) public optionToTokenID;

  function initialize(
    address _proxyRegistryAddress,
    address _nftAddress
  ) public initializer {
      __Ownable_init();
      __ReentrancyGuard_init();
    proxyRegistryAddress = _proxyRegistryAddress;
    nftAddress = _nftAddress;
  }

  function _authorizeUpgrade(address newimplementation) internal
    override
    onlyOwner() {}

  /////
  // IFACTORY METHODS
  /////

  function name() external virtual view returns (string memory) {
    return "NFT SKY Collectible Pre-Sale";
  }

  function symbol() external virtual view returns (string memory) {
    return "NSC";
  }

  function supportsFactoryInterface() external virtual view returns (bool) {
    return true;
  }

  function factorySchemaName() external virtual view returns (string memory) {
    return "ERC1155";
  }

  function numOptions() external virtual view returns (uint256) {
    return NUM_OPTIONS;
  }

  function tokenAddress() external virtual view returns (address) {
    return nftAddress;
  }

  function canMint(uint256 _optionId, uint256 _amount) external virtual view returns (bool) {
    return _canMint(msg.sender, Option(_optionId), _amount);
  }

  function mint(uint256 _optionId, address _toAddress, uint256 _amount, bytes calldata _data) external nonReentrant() {
    return _mint(Option(_optionId), _toAddress, _amount, _data);
  }

  function uri(uint256 _optionId) external virtual view returns (string memory) {
    return Strings.strConcat(
      baseMetadataURI,
      Strings.uint2str(_optionId)
    );
  }

  /**
   * @dev Main minting logic implemented here!
   */
  function _mint(
    Option _option,
    address _toAddress,
    uint256 _amount,
    bytes memory _data
  ) internal virtual {
    require(_canMint(msg.sender, _option, _amount), "Factory1155: _mint can not be more");
    uint256 optionId = uint256(_option);
    Common1155 nftContract = Common1155(nftAddress);
    uint256 id = optionToTokenID[optionId];
    if (id == 0) {
      id = nftContract.create(_toAddress, _amount, "", _data);
      optionToTokenID[optionId] = id;
    } else {
      nftContract.mint(_toAddress, id, _amount, _data);
    }
  }

  /**
   * Get the factory's ownership of Option.
   * Should be the amount it can still mint.
   * NOTE: Called by `canMint`
   */
  function balanceOf(
    address _owner,
    uint256 _optionId
  ) public virtual view returns (uint256) {
    if (!_isOwnerOrProxy(_owner)) {
      // Only the factory owner or owner's proxy can have supply
      return 0;
    }
    uint256 id = optionToTokenID[_optionId];
    if (id == 0) {
      // Haven't minted yet
      return SUPPLY_PER_TOKEN_ID;
    }

    Common1155 nftContract = Common1155(nftAddress);
    uint256 currentSupply = nftContract.totalSupply(id);
    return SUPPLY_PER_TOKEN_ID.sub(currentSupply);
  }

  /**
   * Hack to get things to work automatically on NFTSKY.
   * Use safeTransferFrom so the frontend doesn't have to worry about different method names.
   */
  function safeTransferFrom(
    address /* _from */,
    address _to,
    uint256 _optionId,
    uint256 _amount,
    bytes calldata _data
  ) external virtual {
    _mint(Option(_optionId), _to, _amount, _data);
  }

  //////
  // Below methods shouldn't need to be overridden or modified
  //////

  function isApprovedForAll(
    address _owner,
    address _operator
  ) public virtual view returns (bool) {
    return owner() == _owner && _isOwnerOrProxy(_operator);
  }

  function _canMint(
    address _fromAddress,
    Option _option,
    uint256 _amount
  ) internal view returns (bool) {
    uint256 optionId = uint256(_option);
    return _amount > 0 && balanceOf(_fromAddress, optionId) >= _amount;
  }

  function _isOwnerOrProxy(
    address _address
  ) internal view returns (bool) {
    ProxyRegistry proxyRegistry = ProxyRegistry(proxyRegistryAddress);
    return owner() == _address || address(proxyRegistry.proxies(owner())) == _address;
  }

  function setbaseMetadataURI(
    string memory _baseMetadataURI
  ) external onlyOwner() returns (bool) {
    baseMetadataURI = _baseMetadataURI;
    return true;
  }
}

