import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/utils/math/Math.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract EADAClaim is Ownable {
    // account => index => amount of PRIME claimed
    bytes32 public merkleRoot;
    mapping(address => mapping(uint256 => uint256)) public primeClaimed;

    IERC20 public prime;
    address pullTokensFromAddress;

    bool public disabled;

    // This event is triggered whenever a call to #claim succeeds.
    event Claim(address account, uint256 index, uint256 claimAmount);

    constructor(IERC20 _prime, address _pullTokensFromAddress) {
        prime = _prime;
        pullTokensFromAddress = _pullTokensFromAddress;
    }

    function setPrime(IERC20 _prime) public onlyOwner {
        prime = _prime;
    }

    function setPullTokensFromAddress(address _pullTokensFromAddress)
        public
        onlyOwner
    {
        pullTokensFromAddress = _pullTokensFromAddress;
    }

    function setMerkleRoot(bytes32 _merkleRoot) public onlyOwner {
        merkleRoot = _merkleRoot;
    }

    function setDisabled(bool _disabled) public onlyOwner {
        disabled = _disabled;
    }

    function claim(
        uint256 claimAmount,
        uint256 index,
        uint256 maximumAmount,
        bytes32[] calldata merkleProof
    ) public {
        require(disabled == false, "disabled");

        // Verify the merkle proof.
        bytes32 node = keccak256(abi.encodePacked(msg.sender, index, maximumAmount));
        require(
            MerkleProof.verify(merkleProof, merkleRoot, node),
            "invalid merkleproof proof"
        );

        // Verify not exceding allocation
        require(
            primeClaimed[msg.sender][index] + claimAmount <= maximumAmount,
            "Cannot withdraw more than maximumAmount"
        );

        // Effects
        primeClaimed[msg.sender][index] += claimAmount;
        prime.transferFrom(pullTokensFromAddress, msg.sender, claimAmount);

        emit Claim(msg.sender, index, claimAmount);
    }

    function multiClaim(
        uint256 claimAmount,
        uint256[] calldata indexes,
        uint256[] calldata maximumAmounts,
        bytes32[][] calldata merkleProofs
    ) external {
        uint256 len = indexes.length;
        require(
            len == maximumAmounts.length && len == merkleProofs.length,
            "Mismatched lengths"
        );

        // Claim until we can't claim or out of leafs
        uint256 i = 0;
        while (i < len && 0 < claimAmount) {
          uint256 leafRemainingAmount =  maximumAmounts[i] - primeClaimed[msg.sender][indexes[i]];
          // This leaf still has some juice
          if (leafRemainingAmount > 0) {
            // Take all remaining juice or final partial claim
            uint256 leafClaimAmount = Math.min(leafRemainingAmount, claimAmount);
            claim(leafClaimAmount, indexes[i], maximumAmounts[i], merkleProofs[i]);
            claimAmount -= leafClaimAmount;
          }
          i++;
        }

        require(claimAmount == 0, "Not enough allocation to meet claimAmount");
    }
}