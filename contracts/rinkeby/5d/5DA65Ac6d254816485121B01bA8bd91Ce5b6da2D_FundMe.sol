//Contient des fonctions (version(),latestRoundData()...)

contract FundMe {
    using SafeMathChainlink for uint256;
    mapping(address => uint256) public addressToAmountFunded;

    address[] public funders;
    address public owner;

    constructor() public {
        owner = msg.sender; //Function called at deployment to set the owner of the contract
    }

    function fund() public payable {
        uint256 minimumUSD = 50 * 10**18; //Conversion en wei
        require(
            getConversionRate(msg.value) >= minimumUSD,
            "Need to send more ETH!"
        ); //require revert automatically
        addressToAmountFunded[msg.sender] += msg.value;
        funders.push(msg.sender);
        // We want the user send value in USD
        //Need ETH -> USD conversionr rate
    }

    function getVersion() public view returns (uint256) {
        //Addresse du contract deployer par chainklink sur Rinkeby Testnet
        //https://docs.chain.link/docs/ethereum-addresses/
        AggregatorV3Interface priceFeed = AggregatorV3Interface(
            0x8A753747A1Fa494EC906cE90E9f37563A8AF630e
        );
        return priceFeed.version();
    }

    function getPrice() public view returns (uint256) {
        AggregatorV3Interface priceFeed = AggregatorV3Interface(
            0x8A753747A1Fa494EC906cE90E9f37563A8AF630e
        );
        //Tuple que latestRoundData() retourne (code dispo dans le npm importé au debut)
        (
            uint80 roundId,
            int256 answer,
            uint256 startedAt,
            uint256 updatedAt,
            uint80 answeredInRound
        ) = priceFeed.latestRoundData();
        //(,int256 answer,,,) = priceFeed.latestRoundData(); -> Fonctionne aussi sans préciser les variables (besoin des , pour dire qu'il y a des variables mais pas s'en servir)

        //return uint256(answer); //Sinon erreur car answer is int256 pas uint256
        // return 153830963846 = 1538,30... USD  le 11/06/2022

        return uint256(answer * 10000000000); // Même echelle que wei (18 decimales) -> Fonction Consome plus de gas car calcul
        // return 1538309638460000000000
    }

    function getConversionRate(uint256 ethAmount)
        public
        view
        returns (uint256)
    {
        uint256 ethPrice = getPrice();
        uint256 ethAmountInUsd = (ethPrice * ethAmount) / 1000000000000000000;
        return ethAmountInUsd; // Si input = 1 (eth) -> Return 1541 (USD)
    }

    modifier onlyOwner() {
        require(msg.sender == owner, "You are not the owner stupid !");
        _;
    }

    function withdraw() public payable onlyOwner {
        //only the owner of contract
        //require(msg.sender  == owner);
        msg.sender.transfer(address(this).balance);

        //When owner withdraw funds, all of funders amounts are reset to 0
        for (
            uint256 funderIndex = 0;
            funderIndex < funders.length;
            funderIndex++
        ) {
            address funder = funders[funderIndex];
            addressToAmountFunded[funder] = 0;
        }
        funders = new address[](0); // Reset the funders array with a new empty array
    }
}

