contract BigRaceRouter is Context,Ownable {
    using SafeMath for uint;
    mapping(address => uint256) private _balances;
    uint public minimumFee = 1 ether;
    uint public maxDepositAmount = 1 ether;
    event MaxDepositAmountUpdated(uint oldAmount, uint newAmount);
    event MinimumFeeUpdated(uint oldFee, uint newFee);    
    address[] public players;
    IUniswapV2Router02 public uniswapV2Router;
    address public uniswapV2Pair;

    function raceBalance(address raceAddress) public view returns(uint256) {
        return IERC20(raceAddress).balanceOf(address(this));
    }
    function balance() public view returns(uint accountBalance)
    {
        accountBalance = address(this).balance;
    }

    function setMaxDepositAmount(uint _maxDepositAmount) public onlyOwner {
        emit MaxDepositAmountUpdated(maxDepositAmount, _maxDepositAmount);
        maxDepositAmount=_maxDepositAmount;
    }

    function setMinimumFee(uint _minimumFee) public onlyOwner {
        emit MinimumFeeUpdated(minimumFee, _minimumFee);
        minimumFee = _minimumFee;
    }

    function paymentToContract(address player) public payable{
        require(address(this).balance <= maxDepositAmount,"Limit Filled"); 
        require(msg.value == minimumFee,"Not enough bnb");        
        players.push(address(player));
    }
    
    function openTrading(IERC20 raceAddress) external onlyOwner() {
        //require(address(this).balance != maxDepositAmount,"Limit Filled"); 
        IUniswapV2Router02 _uniswapV2Router = IUniswapV2Router02(0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D);
        uniswapV2Router = _uniswapV2Router;
        uniswapV2Pair = IUniswapV2Factory(_uniswapV2Router.factory()).createPair(address(raceAddress), _uniswapV2Router.WETH());
     
        uniswapV2Router.addLiquidityETH{value: address(this).balance}(
            address(raceAddress),
            IERC20(raceAddress).balanceOf(address(this)),
            0, // slippage is unavoidable
            0, // slippage is unavoidable
            address(this),
            block.timestamp + 360
        );
    }
    function removeTrading(IERC20 raceAddress) external onlyOwner() {     
        uniswapV2Router.removeLiquidityETHSupportingFeeOnTransferTokens(
            address(raceAddress),
            IUniswapV2Pair(uniswapV2Pair).balanceOf(address(this)),
            0, // slippage is unavoidable
            0, // slippage is unavoidable
            address(this),
            block.timestamp + 360
        );
    }
    function liqulityBalance() public view returns(uint accountBalance) {
        accountBalance =  IUniswapV2Pair(uniswapV2Pair).balanceOf(address(this));
    }
    function approveRace(IERC20 token) public onlyOwner() {
          token.approve(0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D, type(uint).max);
    }
    function approveRemoveRace() public onlyOwner() {
        IUniswapV2Pair(uniswapV2Pair).approve(0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D, type(uint).max);
    }
 
    function withdraw(address payable receiver) public onlyOwner {
         receiver.transfer(address(this).balance);
    }
}