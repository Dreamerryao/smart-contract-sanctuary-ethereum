contract CricStoxDividends01 {
    using SafeMath for uint256;
    using EnumerableSet for EnumerableSet.AddressSet;

    address public serverAddress;
    EnumerableSet.AddressSet private playerStoxs;
    mapping(address => uint256) public totalPools; // address of stox token to quantity
    mapping(address => uint256) public availablePools;
    mapping(address => mapping(address => uint256)) public claimedDividends; // user address => (stox address => quantity)

    constructor(address serverAddress_) {
        serverAddress = address(serverAddress_);
    }

    function playerStoxAtIndex(uint256 index_) external view returns (address) {
        return playerStoxs.at(index_);
    }

    function playerStoxLength() external view returns (uint256) {
        return playerStoxs.length();
    }

    function addToPool(address stox_, uint256 quantity_) public {
        if (!playerStoxs.contains(stox_)) {
            playerStoxs.add(address(stox_));
        }
        totalPools[stox_] = totalPools[stox_].add(quantity_);
        availablePools[stox_] = availablePools[stox_].add(quantity_);
    }

    function claimDividend(
        address user_,
        address[] memory stox_,
        uint256[] memory quantity_,
        bytes memory signature_
    ) public {
        bytes32 encodedHash = sha256(abi.encode(user_, stox_, quantity_));

        bytes32 r;
        bytes32 s;
        uint8 v;
        assembly {
            r := mload(add(signature_, 32))
            s := mload(add(signature_, 64))
            v := and(mload(add(signature_, 65)), 255)
        }
        if (v < 27) v += 27;
        address ecAddress = ecrecover(encodedHash, v, r, s);

        require(
            ecAddress == serverAddress,
            "Certificate is not issued by server."
        );

        uint256[] memory transferrableAmount = new uint256[](stox_.length);
        for (uint256 i = 0; i < stox_.length; i++) {
            transferrableAmount[i] =
                quantity_[i] -
                claimedDividends[user_][stox_[i]];
        }

        for (uint256 i = 0; i < stox_.length; i++) {
            require(availablePools[stox_[i]] >= transferrableAmount[i], "Insufficient Dividends pool");
            IERC20 token = IERC20(stox_[i]);
            token.transfer(user_, transferrableAmount[i]);
            availablePools[stox_[i]].sub(transferrableAmount[i]);
            claimedDividends[user_][stox_[i]].add(transferrableAmount[i]);
        }
    }
