//Currently, this contract doubles as a vault to store ether to fund transactions.
//No current method for slashing misbehaving strategies. The worst they can do is trigger repeated calls to this contract.
contract Orchestrator is IOrchestrator, OwnableUpgradeable, UUPSUpgradeable {
    uint16 public constant actionThresholdPercent = 50; //If an action is approved by >= approvalThresholdPercent members, it is approved
    uint256 public rewardPerAction; //100 tokens with 18 decimals
    IGasVault private gasVault;

    KeeperRegistry public keeperRegistry;

    struct Action {
        bytes4[] methods;
        bytes[] args;
        address targetAddress;
        bytes32 hash;
        ActionState state;
    }

    struct dynamicArgs   {
        bytes[] args;
    }

    /*
        Action approval meaning:
        0: Pending
        1: Rejected
        2: Approved
        Since approved functions specify their function selector, all approved functions accept dynamic data. Failing a function selector colision within the contract,
        this means that approved functions implicitly either allow or disallow dynamic data, since not providing it when it is necessary or providing it when it is unnecessary 
        will cause _executeAction to revert.

        Both votes and overall approval status follow this standard.
    */

    uint256 public actionCount;
    mapping(uint256 => Action) public actions;
    mapping(uint256 => mapping(address => uint8)) public action_approvals;

    modifier onlyKeeper() {
        require(
            keeperRegistry.isKeeper(_msgSender()),
            "Only Keeper can call this function"
        );
        _;
    }

    function initialize(address _keeperRegistry, uint256 _rewardPerAction)
        public
        initializer
    {
        __Ownable_init();
        __UUPSUpgradeable_init();
        rewardPerAction = _rewardPerAction;
        keeperRegistry = KeeperRegistry(_keeperRegistry);
    }

    function setRewardPerRequest(uint256 _rewardPerAction) external onlyOwner {
        rewardPerAction = _rewardPerAction;
    }

    function setGasVault(address _gasVault) external onlyOwner {
        gasVault = IGasVault(_gasVault);
    }

    function _authorizeUpgrade(address) internal override onlyOwner {}

    /**
     * @dev Create an action/proposal which is open for approval for all members of the group.
     * An action consists of one or more methods that have to be executed once it's approved.
     * Only an existing member can create an action.
     *
     * @return the `actionId` of the created action.
     *
     * Emits an {ActionStateChanged} event.
     */
    function createAction(
        bytes4[] memory methods,
        bytes[] memory args,
        address targetAddress,
        bytes32 _hash,
        address[] memory _recipients
    ) external override onlyKeeper returns (uint256) {
        require(_recipients.length != 0, "_recipients length cannot be zero");
        require(
            targetAddress != address(this),
            "Action cannot modify this contract"
        );
        require(methods.length == args.length, "Methods vs args size mismatch");
        uint256 _actionCount = actionCount;
        actions[_actionCount] = Action(
            methods,
            args,
            targetAddress,
            _hash,
            ActionState.PENDING
        );
        action_approvals[_actionCount][_msgSender()] = 2;
        actionCount += 1;

        emit ActionCreated(
            _actionCount,
            _msgSender(),
            ActionState.PENDING,
            _hash,
            _recipients
        );
        return _actionCount;
    }

    /**
     * @dev Returns the details of an already created action/proposal given by `actionId`
     * which is open for approval for all members of the group.
     */
    function getActionInfo(uint256 actionId)
        external
        view
        override
        returns (
            bytes4[] memory methods,
            bytes[] memory args,
            address targetAddress,
            ActionState state
        )
    {
        Action memory thisAction = actions[actionId];
        return (
            thisAction.methods,
            thisAction.args,
            thisAction.targetAddress,
            thisAction.state
        );
    }

    /**
     * @dev Allows an existing `_member` of the group to approve/reject an already created action/proposal given by `actionId`
     * which is open for approval for all members of the group.
     *
     * Emits a {vote} event.
     */
    function approveAction(uint256 actionId, uint8 _vote)
        public
        override
        onlyKeeper
        returns (bool)
    {
        require(
            _vote < 3, "Invalid vote"
        );

        action_approvals[actionId][_msgSender()] = _vote;
        emit vote(actionId, msg.sender, _vote);
        return true;
    }

    /**
     * @dev Returns true if an action with given `actionId` is approved by `_member` of the group.
     *
     */
    function actionApprovalByUser(uint256 actionId, address _member)
        public
        view
        returns (uint8)
    {
        return action_approvals[actionId][_member];
    }

    /**
     * @dev Returns true if an action with given `actionId` is approved by all existing members of the group.
     * It’s up to the contract creators to decide if this method should look at majority votes (based on ownership)
     * or if it should ask consent of all the users irrespective of their ownerships.
     */
    function actionApprovalStatus(uint256 actionId) public view returns (uint8) {
        uint256 yesApprovals;
        uint256 noApprovals;
        address[] memory keepers = keeperRegistry.getRegisteredKeepers();
        uint256 _keeperAmount = keepers.length;
        for (uint256 i = 0; i < _keeperAmount; i++) {
            uint8 approval = action_approvals[actionId][keepers[i]];
            if (approval == 1)   {
                noApprovals += 1;
            }
            else if (approval == 2)    {
                yesApprovals += 1;
            }
        }
        if ((noApprovals * 100) / actionThresholdPercent >= keepers.length)   {
            return 1;
        }
        else if ((yesApprovals * 100) / actionThresholdPercent >= keepers.length)   {
            return 2;
        } 
        else return (0);
    }

    /**
     * @dev Executes the action referenced by the given `actionId` as long as it is approved actionThresholdPercent of group.
     * The executeAction executes all methods as part of given action in an atomic way (either all should succeed or none should succeed).
     * Once executed, the action should be set as executed (state=3) so that it cannot be executed again.
     *
     * Emits an {ActionStateChanged} event.
     */
    function executeAction(uint256 actionId, bytes[] calldata dynamicData)
        external
        onlyKeeper
        returns (ActionState)
    {
        Action memory thisAction = actions[actionId];

        require(
            thisAction.state == ActionState.PENDING,
            "Action already executed or rejected"
        );
        uint8 actionApproval = actionApprovalStatus(actionId);

        //action votes must be less than 4. If actionApproval is greater than 1, it must be 2 or 3, which means it is approved either with or without dynamic data
        if (actionApproval == 2) {
            actions[actionId].state = ActionState.COMPLETED;
            uint256 originalGas = gasleft();

            //Withdraw required gas from strategy account
            uint256 gasAvailable = gasVault.setAsideGas(
                thisAction.targetAddress
            );

            bytes memory data = abi.encode(thisAction);
            bool success;

            if (dynamicData[0].length == 0)   {
                (success, ) = address(this).call{gas: gasAvailable}(
                    abi.encodeWithSignature("_executeAction(bytes,bytes)", data, '')
                );
            } else   { 
                dynamicArgs memory _dynamicData = dynamicArgs(dynamicData);
                bytes memory _dynamicArgs = abi.encode(_dynamicData);
                (success, ) = address(this).call{gas: gasAvailable}(
                    abi.encodeWithSignature("_executeAction(bytes,bytes)", data, _dynamicArgs)
                );
            }

            //Perform actions
            if (success) {
                emit ActionExecuted(actionId, _msgSender(), rewardPerAction);
                //Return unused gas, store used gas (in ether) for executor to withdraw at their leisure
                gasVault.returnGas(thisAction.targetAddress, originalGas);

                return ActionState.COMPLETED;
            } else   {
                emit ActionFailed(actionId);
                gasVault.returnGas(thisAction.targetAddress, originalGas); //REVIEW : If action fails we are returning the gas
                return ActionState.PENDING;
            }
        } else if (actionApproval == 1) {
            actions[actionId].state = ActionState.REJECTED;
            emit ActionRejected(actionId, _msgSender());
            return ActionState.REJECTED;
        } else   {
            revert("Votes lacking,state still pending");
        }
    }

    function _executeAction(bytes memory data, bytes memory dynamicData) external {
        require(
            msg.sender == address(this),
            "Only Orchestrator can call this function"
        );

        //Decode thisAction so it can be used
        Action memory thisAction = abi.decode(data, (Action));

        //Call each method in the action, adding dynamic data to each method if necessary
        if (dynamicData.length == 0)   {
            //If dynamic data is not being used, just call with the normal method arguments
            for (uint256 i = 0; i < thisAction.methods.length; i++) {
                (bool success, ) = thisAction.targetAddress.call(
                    abi.encodePacked(thisAction.methods[i], thisAction.args[i])
                );

                //If any method fails, the action will revert, reverting all other methods but still pulling gas used from the GasVault.
                require(success);
            }
        } else   {        //If dynamic data has been passed in, it should be used
            dynamicArgs memory _dynamicArgs = abi.decode(dynamicData, (dynamicArgs));
            //If dynamic data is being used, it is added as an arg after the other method args.
            for (uint256 i = 0; i < thisAction.methods.length; i++) {
                (bool success, ) = thisAction.targetAddress.call(
                    abi.encodePacked(thisAction.methods[i], thisAction.args[i], _dynamicArgs.args[i])
                );

                //If any method fails, the action will revert, reverting all other methods but still pulling gas used from the GasVault.
                require(success);
            }
        }
    }
}

