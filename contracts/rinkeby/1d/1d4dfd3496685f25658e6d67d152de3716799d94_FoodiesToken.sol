import {ERC721} from "@solmate/tokens/ERC721.sol";
import {Strings} from "@openzeppelin/utils/Strings.sol";
import {Ownable} from "@openzeppelin/access/Ownable.sol";
import {SafeTransferLib} from "@solmate/utils/SafeTransferLib.sol";

contract FoodiesToken is ERC721, Ownable {
    using Strings for uint256;

    // private

    string private baseURI;

    // replace with final address
    address private constant foodiesCorporateA =
        0xb2f3c1c9F603439693F52ef4cb5BA46FC4109B72;

    // replace with final address
    address private constant foodiesCorporateB =
        0xb2f3c1c9F603439693F52ef4cb5BA46FC4109B72;

    // public

    bool public openForBusiness = false;

    uint256 public totalSupply = 0;
    uint256 public constant maxSupply = 9999;
    uint256 public constant maxMint = 1; // for transparency

    bool public corporateDidClaim = false;
    uint256 public constant corporateClaimAmount = 500;

    constructor() ERC721("Foodies", "FOODIE") {}

    function mint() external {
        require(openForBusiness, "Sorry, we're closed.");
        require(
            totalSupply < maxSupply,
            "Sorry, the soft serve machine is permanently broken."
        );
        require(
            balanceOf(msg.sender) < maxMint,
            "Sorry, you've already received your free Foodie."
        );
        unchecked {
            _safeMint(msg.sender, totalSupply + 1);
            totalSupply++;
        }
    }

    function setBaseURI(string memory _baseURI) external onlyOwner {
        baseURI = _baseURI;
    }

    function openUp(bool _openForBusiness) external onlyOwner {
        openForBusiness = _openForBusiness;
    }

    function corporateClaim() external onlyOwner {
        require(
            !corporateDidClaim,
            "Corporate has already claimed their Foodies."
        );

        _safeMint(foodiesCorporateA, corporateClaimAmount);
        _safeMint(foodiesCorporateB, corporateClaimAmount);

        corporateDidClaim = true;
    }

    function withdraw() external onlyOwner {
        require(address(this).balance > 0, "Nothing to withdraw.");

        SafeTransferLib.safeTransferETH(msg.sender, address(this).balance);
    }

    function tokenURI(uint256 tokenId)
        public
        view
        override
        returns (string memory)
    {
        ownerOf(tokenId); // make sure our tokenId has been minted

        return
            bytes(baseURI).length > 0
                ? string(abi.encodePacked(baseURI, tokenId.toString(), ".json"))
                : "";
    }
}

