import '@openzeppelin/contracts-upgradeable/proxy/ClonesUpgradeable.sol';
import '@openzeppelin/contracts/access/Ownable.sol';
import "./VestingWallet.sol";
import "./DAOToken.sol";

contract VestingFactory is Ownable {

    using ClonesUpgradeable for address;

    event VestingContractDeployed(address implementationContract, DAOToken tokenContract);
    event VestingCreated(uint256 contractIndex, address beneficiary, uint256 amount);

    uint8 public constant VOTING_BOOST = 4;

    address public implementationContract;
    DAOToken public tokenContract;

    mapping(address => address) public beneficiaryToVestingContract;
    mapping(address => bool) public beneficiaryToVestingContractInitialized;

    address[] public deployedContracts;

    /// @param implementationContract_ address of the implementation contract
    /// @param tokenContract_ address of the Goddess DAO Token contract
    /// @param owner_ address of the owner of the contract
    constructor (address implementationContract_, DAOToken tokenContract_, address owner_) {
        implementationContract = implementationContract_;
        tokenContract = tokenContract_;
        transferOwnership(owner_);

        emit VestingContractDeployed(implementationContract_, tokenContract_);
    }

    /// @dev Creates a new vesting contract
    /// @param beneficiary_ address of the beneficiary
    /// @param amount_ amount of tokens to be vested
    /// @param startTimestamp_ starting timestamp of vesting period (before that is essentially cliff)
    /// @param durationSeconds_ duration of vesting period in seconds
    function createVestingContract(
        address beneficiary_, uint256 amount_, uint64 startTimestamp_, uint64 durationSeconds_
    ) public onlyOwner {
        require(!beneficiaryToVestingContractInitialized[beneficiary_], "beneficiary has already been initialized");

        VestingWallet vestingWallet = VestingWallet(payable(implementationContract.clone()));
        vestingWallet.initialize(beneficiary_, startTimestamp_, durationSeconds_, address(tokenContract), amount_);

        address vestingWalletAddress = address(vestingWallet);
        tokenContract.transfer(vestingWalletAddress, amount_);

        deployedContracts.push(vestingWalletAddress);
        beneficiaryToVestingContract[beneficiary_] = vestingWalletAddress;
        beneficiaryToVestingContractInitialized[beneficiary_] = true;

        emit VestingCreated(deployedContracts.length - 1, beneficiary_, amount_);
    }

    /// @dev number of deployed vesting contracts
    function deployedContractsCount() external view returns (uint256) {
        return deployedContracts.length;
    }

    /// @dev returns the voting power of the given beneficiary_
    function votingPower(address beneficiary_) external view returns (uint256) {
        uint256 beneficiaryBalance = tokenContract.balanceOf(beneficiary_);

        if (!beneficiaryToVestingContractInitialized[beneficiary_]) {
            return beneficiaryBalance;
        }

        VestingWallet wallet = VestingWallet(payable(beneficiaryToVestingContract[beneficiary_]));
        address tokenAddress = address(tokenContract);

        uint256 vested = wallet.vestedAmount(tokenAddress, uint64(block.timestamp));
        uint256 unvested = wallet.votingBalance(tokenAddress) - vested;
        uint256 released = wallet.released(tokenAddress);

        return beneficiaryBalance + vested - released + unvested * VOTING_BOOST;
    }

    /// @dev override the ownable function, because we don't want to accidentally renounce ownership
    function renounceOwnership() public override virtual onlyOwner {
        revert("Ownable: renounceOwnership is not supported");
    }

}

