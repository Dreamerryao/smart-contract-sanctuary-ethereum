contract Nnr is Context, Ownable, IERC20Burnable {
    using SafeMath for uint;

    uint private constant SECONDS_IN_A_DAY = 86400;

    uint public constant INITIAL_ALLOTMENT = 180 * (10 ** 18);

    uint public constant EMISSION_PER_DAY = 10 ** 18;

    uint public constant NNR_EXCHANGE_RATE = 1500000000000000;

    uint public emissionStartTimestamp;

    uint public emissionEndTimestamp;

    uint private _totalSupply;

    string private _name;

    string private _symbol;

    address private _neopetsAddress;

    mapping (address => uint) private _balances;

    mapping (address => mapping (address => uint)) private _allowances;

    mapping(uint => uint) private _lastClaim;

    constructor (string memory name_, string memory symbol_, uint emissionStartTimestamp_, address auctionAddress) {
        _name = name_;
        _symbol = symbol_;
        emissionStartTimestamp = emissionStartTimestamp_;
        emissionEndTimestamp = emissionStartTimestamp_ + SECONDS_IN_A_DAY * 365 * 3;

        _mint(auctionAddress, 1800 * (10 ** 18));
    }

    function name() public view returns (string memory) {
        return _name;
    }

    function symbol() public view returns (string memory) {
        return _symbol;
    }

    function decimals() public pure returns (uint8) {
        return 18;
    }

    function totalSupply() public view override returns (uint) {
        return _totalSupply;
    }

    function balanceOf(address account) public view override returns (uint) {
        return _balances[account];
    }

    function lastClaim(uint tokenIndex) public view returns (uint) {
        require(_neopetsAddress != address(0), "Token contract does not exist");
        require(INeopets(_neopetsAddress).ownerOf(tokenIndex) != address(0), "Token has no owner or does not exist");
        require(tokenIndex < INeopets(_neopetsAddress).totalSupply(), "Token is not minted");

        return _lastClaim[tokenIndex] != 0 ? _lastClaim[tokenIndex] : emissionStartTimestamp;
    }

    function accumulated(uint tokenIndex) public view returns (uint) {
        require(_neopetsAddress != address(0), "NFT contract does not exist");
        require(block.timestamp > emissionStartTimestamp, "Emission has not started");
        require(INeopets(_neopetsAddress).ownerOf(tokenIndex) != address(0), "NFT has no owner or does not exist");
        require(tokenIndex < INeopets(_neopetsAddress).totalSupply(), "NFT is not minted");

        uint lastClaimed = lastClaim(tokenIndex);

        if (lastClaimed >= emissionEndTimestamp) return 0;

        uint accumulationPeriod = block.timestamp < emissionEndTimestamp ? block.timestamp : emissionEndTimestamp;
        uint totalAccumulated = accumulationPeriod.sub(lastClaimed).div(SECONDS_IN_A_DAY).mul(EMISSION_PER_DAY);

        if (lastClaimed == emissionStartTimestamp) {
            totalAccumulated = totalAccumulated.add(INeopets(_neopetsAddress).isMintedBeforeReveal(tokenIndex) ? INITIAL_ALLOTMENT : 0);
        }

        return totalAccumulated;
    }

    function setNeopetsAddress(address neopetsAddress) public onlyOwner {
        _neopetsAddress = neopetsAddress;
    }

    function buy(uint amount) public payable {
        require(_neopetsAddress != address(0), "NFT contract does not exist");
        require(block.timestamp > INeopets(_neopetsAddress).revealTimestamp(), "Reveal time is not ended");

        uint price = amount.mul(NNR_EXCHANGE_RATE);

        require(msg.value >= price, "Ether value sent is not correct");

        _mint(_msgSender(), amount * (10 ** 18));

        uint remainder = msg.value - price;

        if (remainder > 0) {
            payable(_msgSender()).transfer(remainder);
        }
    }

    function claim(uint[] memory tokenIndices) public {
        require(block.timestamp > emissionStartTimestamp, "Emission has not started yet");

        uint totalClaimAmount = 0;

        for (uint i = 0; i < tokenIndices.length; i++) {
            uint tokenIndex = tokenIndices[i];

            require(_neopetsAddress != address(0), "NFT contract does not exist");
            require(tokenIndex < INeopets(_neopetsAddress).totalSupply(), "NFT is not minted");
            require(INeopets(_neopetsAddress).ownerOf(tokenIndex) == _msgSender(), "Sender is not the owner");

            for (uint j = i + 1; j < tokenIndices.length; j++) {
                require(tokenIndex != tokenIndices[j], "Duplicate token index");
            }

            uint claimAmount = accumulated(tokenIndex);

            if (claimAmount != 0) {
                totalClaimAmount = totalClaimAmount.add(claimAmount);
                _lastClaim[tokenIndex] = block.timestamp;
            }
        }

        require(totalClaimAmount != 0, "No NNR accumulated");

        _mint(_msgSender(), totalClaimAmount);
    }

    function transfer(address recipient, uint amount) public virtual override returns (bool) {
        _transfer(_msgSender(), recipient, amount);
        return true;
    }

    function allowance(address owner, address spender) public view virtual override returns (uint) {
        return _allowances[owner][spender];
    }

    function approve(address spender, uint amount) public virtual override returns (bool) {
        _approve(_msgSender(), spender, amount);
        return true;
    }

    function transferFrom(address sender, address recipient, uint amount) public virtual override returns (bool) {
        _transfer(sender, recipient, amount);

        if (_msgSender() != owner()) {
            _approve(sender, _msgSender(), _allowances[sender][_msgSender()].sub(amount, "ERC20: transfer amount exceeds allowance"));
        }

        return true;
    }

    function increaseAllowance(address spender, uint addedValue) public virtual returns (bool) {
        _approve(_msgSender(), spender, _allowances[_msgSender()][spender].add(addedValue));
        return true;
    }

    function burn(uint burnQuantity) public virtual override returns (bool) {
        _burn(_msgSender(), burnQuantity);
        return true;
    }

    function decreaseAllowance(address spender, uint subtractedValue) public virtual returns (bool) {
        _approve(_msgSender(), spender, _allowances[_msgSender()][spender].sub(subtractedValue, "ERC20: decreased allowance below zero"));
        return true;
    }

    function _transfer(address sender, address recipient, uint amount) internal virtual {
        require(sender != address(0), "ERC20: transfer from the zero address");
        require(recipient != address(0), "ERC20: transfer to the zero address");

        _beforeTokenTransfer(sender, recipient, amount);
        _balances[sender] = _balances[sender].sub(amount, "ERC20: transfer amount exceeds balance");
        _balances[recipient] = _balances[recipient].add(amount);

        emit Transfer(sender, recipient, amount);
    }

    function _mint(address account, uint amount) internal virtual {
        require(account != address(0), "ERC20: mint to the zero address");

        _beforeTokenTransfer(address(0), account, amount);
        _totalSupply = _totalSupply.add(amount);
        _balances[account] = _balances[account].add(amount);

        emit Transfer(address(0), account, amount);
    }

    function _burn(address account, uint amount) internal virtual {
        require(account != address(0), "ERC20: burn from the zero address");

        _beforeTokenTransfer(account, address(0), amount);
        _balances[account] = _balances[account].sub(amount, "ERC20: burn amount exceeds balance");
        _totalSupply = _totalSupply.sub(amount);

        emit Transfer(account, address(0), amount);
    }

    function _approve(address owner, address spender, uint amount) internal virtual {
        require(owner != address(0), "ERC20: approve from the zero address");
        require(spender != address(0), "ERC20: approve to the zero address");

        _allowances[owner][spender] = amount;

        emit Approval(owner, spender, amount);
    }

    function _beforeTokenTransfer(address from, address to, uint amount) internal virtual {}
}