pragma solidity ^0.8.2;

import '@openzeppelin/contracts/access/Ownable.sol';
import '@openzeppelin/contracts/token/ERC20/IERC20.sol';
import '@openzeppelin/contracts/token/ERC20/extensions/draft-IERC20Permit.sol';
import '@openzeppelin/contracts/utils/Counters.sol';

interface IOlympusERC20Token is IERC20, IERC20Permit {}

contract OhmShop is Ownable {
  using Counters for Counters.Counter;

  enum Size {
    XS,
    S,
    M,
    L,
    XL,
    XXL
  }

  mapping(Size => Counters.Counter) public soldAmount; // amount of each size sold already
  mapping(Size => uint256) public maxAmount; // max amount for each size

  // Sale parameters
  uint256 price; // price in ohm
  bool isSaleActive;

  event Purchase(Size size, address recipient);

  IOlympusERC20Token sOhmToken;

  constructor() {
    isSaleActive = false;
    price = 1000000000; // 1 sOHM

    maxAmount[Size.XS] = 12; // Extra Small
    maxAmount[Size.S] = 14; // Small
    maxAmount[Size.M] = 16; // Medium
    maxAmount[Size.L] = 24; // Large
    maxAmount[Size.XL] = 20; // Extra Large
    maxAmount[Size.XXL] = 16; // Extra Extra Large

    sOhmToken = IOlympusERC20Token(0x04F2694C8fcee23e8Fd0dfEA1d4f5Bb8c352111F); // sOHM mainnet address
  }

  // Public functions
  function buy(
    Size size,
    address recipient,
    uint256 deadline,
    uint8 v,
    bytes32 r,
    bytes32 s
  ) public {
    require(isSaleActive, 'Sale is not active');
    require(soldAmount[size].current() < maxAmount[size], 'Selected size is sold out');

    // Transfer funds
    sOhmToken.permit(msg.sender, address(this), price, deadline, v, r, s);
    sOhmToken.transferFrom(msg.sender, address(this), price);

    soldAmount[size].increment();

    emit Purchase(size, recipient);
  }

  // Admin functions
  function flipSaleState() external onlyOwner {
    isSaleActive = !isSaleActive;
  }

  function setSalePrice(uint256 _price) external onlyOwner {
    price = _price;
  }

  function updateInventoryForSize(Size size, uint256 quantity) external onlyOwner {
    require(soldAmount[size].current() <= quantity, 'Quantity is less than already sold amount');
    maxAmount[size] = quantity;
  }

  function withdraw() external onlyOwner {
    sOhmToken.transfer(msg.sender, sOhmToken.balanceOf(address(this)));
  }
}

