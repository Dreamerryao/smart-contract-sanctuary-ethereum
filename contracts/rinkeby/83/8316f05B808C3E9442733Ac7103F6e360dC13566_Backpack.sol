/**
 * @title Backpack
 * @notice A lightweight smart contract wallet owned by an ERC721 token.
 */
contract Backpack is IBackpack {
    using Strings for uint256;
    using Strings for uint16;

    // The contract address that owns this backpack
    address public _ownerTokenAddress;
    // The individual token ID that owns this backpack
    uint256 public _ownerTokenId;

    event TransactionExecuted(address indexed target, uint indexed value, bytes data);

    /**
     * @dev Throws if the sender is not the backpack owner.
     */
    modifier onlyOwner() {
      require(_isOwner(msg.sender), "Caller is not owner");
      _;
    }

    /**
     * Initializer
     */
    function initialize(address nftAddress, uint256 tokenId) public {
      require(
        ERC165Checker.supportsInterface(nftAddress, type(IERC721).interfaceId),
        "Owning contract must be ERC721"
      );
      require(_ownerTokenAddress == address(0), "Already initialized");
      _ownerTokenAddress = nftAddress;
      _ownerTokenId = tokenId;
    }

    /**
     * @inheritdoc IBackpack
     */
    function execTransaction(address _target, uint _value, bytes calldata _data) public onlyOwner override returns (bytes memory _result) {
      bool success;
      // solhint-disable-next-line avoid-low-level-calls
      (success, _result) = _target.call{value: _value}(_data);
      require(success, "Backpack: transaction failed");
      emit TransactionExecuted(_target, _value, _data);
      return _result;
    }

    /**
     * @inheritdoc IBackpack
     */
    function owner() public view override returns (address) {
      return IERC721(_ownerTokenAddress).ownerOf(_ownerTokenId);
    }

    /**
     * @inheritdoc IBackpack
     */
    function ownerTokenAddress() public view override returns (address) {
      return _ownerTokenAddress;
    }

    /**
     * @inheritdoc IBackpack
     */
    function ownerTokenId() public view override returns (uint256) {
      return _ownerTokenId;
    }

    /**
     * @inheritdoc IERC165
     */
    function supportsInterface(bytes4 interfaceId) public view virtual override(IERC165) returns (bool) {
      return (
        interfaceId == type(IBackpack).interfaceId ||
        interfaceId == type(IERC1155Receiver).interfaceId ||
        interfaceId == type(IERC721Receiver).interfaceId ||
        interfaceId == type(IERC165).interfaceId
      );
    }

    /**
     * @inheritdoc IERC721Receiver
     */
    function onERC721Received(
      address,
      address,
      uint256 receivedTokenId,
      bytes memory
    ) public virtual override returns (bytes4) {
      _revertIfOwnershipCycle(msg.sender, receivedTokenId);
      return this.onERC721Received.selector;
    }

    /**
     * @inheritdoc IERC1155Receiver
     */
    function onERC1155Received(
        address,
        address,
        uint256,
        uint256,
        bytes memory
    ) public virtual override returns (bytes4) {
        return this.onERC1155Received.selector;
    }

    /**
     * @inheritdoc IERC1155Receiver
     */
    function onERC1155BatchReceived(
        address,
        address,
        uint256[] memory,
        uint256[] memory,
        bytes memory
    ) public virtual override returns (bytes4) {
        return this.onERC1155BatchReceived.selector;
    }

    /**
     * @dev Helper method to check if an address is the owner of the backpack
     * @param _addr The address.
     */
    function _isOwner(address _addr) internal view returns (bool) {
      return owner() == _addr;
    }

    /**
     * @dev Helper method to check if a received token is in the ownership chain of the backpack
     * @param receivedTokenAddress The address of the token being received.
     * @param receivedTokenId The ID of the token being received.
     */
    function _revertIfOwnershipCycle(
      address receivedTokenAddress,
      uint256 receivedTokenId
    ) internal view {
      address currentOwner = owner();

      // Iterate through this backpack's ownership chain
      while (ERC165Checker.supportsInterface(currentOwner, type(IBackpack).interfaceId)) {

        address currentTokenAddress = IBackpack(currentOwner).ownerTokenAddress();
        uint256 currentTokenId = IBackpack(currentOwner).ownerTokenId();
        require(
          !(
            currentTokenAddress == receivedTokenAddress &&
            currentTokenId == receivedTokenId
          ),
          "Token in ownership chain"
        );

        // Advance up the ownership chain
        currentOwner = IERC721(currentTokenAddress).ownerOf(currentTokenId);
      }
    }
}

