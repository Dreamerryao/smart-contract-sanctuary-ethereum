        getState().tokenIdToInfo[_id] = _tokenInfo;
    }

    function getTokenInfo(uint256 _id) internal view returns (TokenInfo memory tokenInfo_) {
        tokenInfo_ = getState().tokenIdToInfo[_id];
    }
}

