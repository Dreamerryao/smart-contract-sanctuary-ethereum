import {ERC1155721FacetStorage, TokenInfo} from "./ERC1155721FacetStorage.sol";

contract ERC1155721Facet is IERC1155721Facet, FacetInitializable, ERC721Impl, ERC1155Impl {
    using LibUtilities for uint256;
    using LibUtilities for string;
    using ERC1155721FacetStorage for TokenInfo;

    error MaxSupplyReached(uint256 _id);
    error NonexistentToken(uint256 _id);

    error MintToBurnAddress();
    error MintUninitializedToken(uint256 _id);

    error InvalidCreateTokenInputs();

    function ERC1155721Facet_Initialize()
        external
        facetInitializer(keccak256("ERC1155721Facet"))
        requireOwnerOrRole(ADMIN_ROLE)
    {
        __ERC721Impl_Initialize();
        __ERC1155Impl_Initialize();
    }

    // =============================================================
    //                      External functions
    // =============================================================

    function tokenURI(uint256 _id) public view virtual override returns (string memory) {
        return uri(_id);
    }

    function uri(uint256 _id) public view virtual override returns (string memory) {
        TokenInfo memory _tokenInfo = ERC1155721FacetStorage.getTokenInfo(_id);
        if (!_tokenInfo.isInitialized()) {
            revert NonexistentToken(_id);
        }
        // TODO: implement real
        if (_tokenInfo.maxSupply == 1) {
            return
                "ipfs://QmeSjSinHpPnmXmspMjwiXyN6zS4E9zccariGR3jxcaWtq/6388";
        }
        return "ipfs://QmdtARLUPQeqXrVcNzQuRqr9UCFoFvn76X9cdTczt4vqfw/69";
    }

    // TODO: what requirement is there to mint?
    function mint(
        address _to,
        uint256 _id,
        uint256 _amount
    ) external {
        TokenInfo memory _tokenInfo = ERC1155721FacetStorage.getTokenInfo(_id);
        if (!_tokenInfo.isInitialized()) {
            revert NonexistentToken(_id);
        }
        if(_tokenInfo.maxSupply == 1) {
            // mint with erc721a
            _mint(_to, _amount);
            return;
        }
        // mint with erc1155
        // _beforeMint(_to, _id, _amount);
        _mint(_to, _id, _amount, "");
    }

    // TODO: what requirement is there to mint?
    function mintBatch(
        address _to,
        uint256[] memory _ids,
        uint256[] memory _amounts,
        bytes memory _data
    ) external {
        uint256 len = _ids.length;
        for (uint256 i = 0; i < len; i++) {
            _beforeMint(_to, _ids[i], _amounts[i]);
        }
        _mintBatch(_to, _ids, _amounts, _data);
    }

    function initializeToken(string memory _name, uint256 _maxSupply) public {
        initializeTokens(_name.asSingletonArray(), _maxSupply.asSingletonArray());
    }

    function initializeTokens(string[] memory _names, uint256[] memory _maxSupplies)
        public
        requireOwnerOrRole(ADMIN_ROLE)
    {
        if (_names.length != _maxSupplies.length) revert InvalidCreateTokenInputs();
        uint256 curTokenId = ERC1155721FacetStorage.getState().tokenIdCounter;
        for (uint256 i = 0; i < _names.length; i++) {
            uint256 newTokenID = curTokenId++; // start at 0 to match azuki
            ERC1155721FacetStorage.setTokenInfo(newTokenID, TokenInfo({name: _names[i], maxSupply: _maxSupplies[i]}));
        }
        // update storage with potentially new last-used tokenId
        ERC1155721FacetStorage.getState().tokenIdCounter = curTokenId;
    }

    function getTokenInfo(uint256 _id) public view returns (TokenInfo memory tokenInfo_) {
        tokenInfo_ = ERC1155721FacetStorage.getTokenInfo(_id);
        if (!tokenInfo_.isInitialized()) {
            revert NonexistentToken(_id);
        }
    }
    
    function getTokenCounter() external view returns (uint256) {
        return ERC1155721FacetStorage.getState().tokenIdCounter;
    }

    // =============================================================
    //                      Internal functions
    // =============================================================

    // Validate inputs and require the contract is not paused to allow minting
    function _beforeMint(
        address _to,
        uint256 _id,
        uint256 _amount
    ) internal view whenNotPaused {
        if (_to == address(0)) {
            revert MintToBurnAddress();
        }
        TokenInfo memory _tokenInfo = ERC1155721FacetStorage.getTokenInfo(_id);
        if (!_tokenInfo.isInitialized()) {
            revert MintUninitializedToken(_id);
        }
        if (totalSupply(_id) + _amount > _tokenInfo.maxSupply) {
            revert MaxSupplyReached(_id);
        }
    }

    // =============================================================
    //                           Overloads
    // =============================================================

    /**
     * @dev See {IERC1155-setApprovalForAll}.
     */
    function setApprovalForAll(address operator, bool approved)
        public
        virtual
        override(ERC1155Upgradeable, ERC721AUpgradeable)
    {
        _setApprovalForAll(_msgSender(), operator, approved);
    }

    /**
     * @dev See {IERC1155-isApprovedForAll}.
     */
    function isApprovedForAll(address account, address operator)
        public
        view
        virtual
        override(ERC1155Upgradeable, ERC721AUpgradeable)
        returns (bool)
    {
        // TODO: look into erc721 storage if its an nft
        return ERC1155Storage.layout()._operatorApprovals[account][operator];
    }

    function _beforeTokenTransfer(
        address _operator,
        address _from,
        address _to,
        uint256[] memory _ids,
        uint256[] memory _amounts,
        bytes memory _data
    ) internal override {
        super._beforeTokenTransfer(_operator, _from, _to, _ids, _amounts, _data);
    }
}

