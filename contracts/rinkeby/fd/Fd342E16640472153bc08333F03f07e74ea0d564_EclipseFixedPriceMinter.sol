pragma solidity ^0.8.0;
import "./EclipseAccess.sol";
import "./IEclipseMinter.sol";
import "./IEclipseERC721.sol";

contract EclipseFixedPriceMinter is EclipseAccess, IEclipseMinter {
    struct Collection {
        address artist;
        uint256 startBlock;
        uint256 price;
    }

    mapping(address => Collection) public collections;

    function addCollection(address collection, address artist)
        external
        override
        onlyAdmin
    {
        collections[collection] = Collection(artist, 0, 0);
    }

    function setCollection(
        address collection,
        uint256 startBlock,
        uint256 price
    ) external {
        require(collections[collection].artist == msg.sender, "only artist");
        collections[collection].startBlock = startBlock;
        collections[collection].price = price;
    }

    function getPrice(address collection)
        public
        view
        override
        returns (uint256)
    {
        return collections[collection].price;
    }

    function _checkMint(address collection) internal view {
        require(msg.value >= getPrice(collection), "Wrong amount sent");
        require(
            collections[collection].startBlock != 0 &&
                collections[collection].startBlock <= block.number,
            "mint not started yet"
        );
    }

    function mint(address collection) external payable override {
        _checkMint(collection);
        IEclipseERC721(collection).mint(msg.sender);
    }

    // function mint(address collection, address to) external payable override {
    //     _checkMint(collection);
    //     IEclipseERC721(collection).mint(to);
    // }

    function mintMany(address collection, uint256 amount)
        external
        payable
        override
    {
        _checkMint(collection);
        IEclipseERC721(collection).mint(msg.sender, amount);
    }

    // function mintMany(
    //     address collection,
    //     address to,
    //     uint256 amount
    // ) external payable override {
    //     _checkMint(collection);
    //     IEclipseERC721(collection).mint(to, amount);
    // }
}

