import "@openzeppelin/contracts/access/Ownable.sol";

import "contracts/interfaces/IReceipt.sol";
import "contracts/base/BridgeEIP712.sol";
import "./NFT.sol";

contract ReceiptBridge is Ownable, BridgeEIP712, IReceipt {
    using SafeERC20 for IERC20;

    uint256 constant FEE_100_PERCENT = 100e9;
    uint256 immutable feePercent;

    NFT nft;
    // token => admin accumulated fee
    mapping(address => uint256) public adminFee;

    constructor(
        uint256 _feePercent,
        address _nft,
        address _owner
    ) {
        feePercent = _feePercent;
        nft = NFT(_nft);
        _transferOwnership(_owner);
    }

    function pay(
        uint256 _amount,
        address _token,
        address _recipient,
        string calldata _payerName,
        string calldata _recipientName,
        uint256 _receiptId,
        bytes calldata _signature
    ) external {
        useSignature(
            _amount,
            _token,
            msg.sender,
            _recipient,
            _payerName,
            _recipientName,
            _receiptId,
            _signature
        );

        (uint256 toReceive, ) = distributeInvoice(
            _token,
            _amount,
            msg.sender,
            _recipient
        );

        uint256 tokenId = nft.mintReceiptNFT(
            _amount,
            uint96(block.timestamp),
            _token,
            msg.sender,
            _recipient,
            _payerName,
            _recipientName
        );

        emit Payed(
            msg.sender,
            _recipient,
            _amount,
            toReceive,
            _token,
            _receiptId,
            tokenId
        );
    }

    function redeemFee(address _token) external onlyOwner {
        uint256 amount = adminFee[_token];
        if (amount > 0) {
            delete adminFee[_token];
            IERC20(_token).safeTransfer(msg.sender, amount);
        }
    }

    function owner()
        public
        view
        override(Ownable, BridgeEIP712)
        returns (address)
    {
        return Ownable.owner();
    }

    function nonce() internal view override returns (uint256) {
        return nft.tokenId();
    }

    function distributeInvoice(
        address _token,
        uint256 _amount,
        address _from,
        address _to
    ) internal returns (uint256 recipient_, uint256 fee_) {
        fee_ = (_amount * feePercent) / FEE_100_PERCENT;
        recipient_ = _amount - fee_;

        IERC20(_token).safeTransferFrom(_from, _to, recipient_);
        IERC20(_token).safeTransferFrom(_from, address(this), fee_);

        adminFee[_token] += fee_;
    }
}

