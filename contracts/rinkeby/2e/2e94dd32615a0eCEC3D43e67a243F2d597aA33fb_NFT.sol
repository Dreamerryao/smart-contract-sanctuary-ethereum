pragma solidity ^0.8.12;

import "@openzeppelin/contracts/token/ERC721/utils/ERC721Holder.sol";
import "@openzeppelin/contracts/token/ERC721/ERC721.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/Counters.sol";

import "contracts/libraries/NFTDescriptor.sol";
import "./ReceiptBridge.sol";

contract NFT is ERC721Holder, ERC721, Ownable {
    using Counters for Counters.Counter;
    using NFTDescriptor for IReceipt.Receipt;

    Counters.Counter private _tokenIdCounter;

    mapping(uint256 => IReceipt.Receipt) public metadata;

    constructor(uint256 _feePercent) ERC721("NFT", "NFT") {
        address _receiptBridge = address(
            new ReceiptBridge(_feePercent, address(this), msg.sender)
        );
        _transferOwnership(_receiptBridge);
    }

    function tokenURI(uint256 _id)
        public
        view
        override
        returns (string memory)
    {
        return metadata[_id].constructTokenURI();
    }

    function mintReceiptNFT(
        uint256 _amount,
        uint96 _timestamp,
        address _token,
        address _from,
        address _to,
        string memory _fromName,
        string memory _toName
    ) external onlyOwner returns (uint256 tokenId_) {
        uint256 currnetTokenId = _tokenIdCounter.current();
        _tokenIdCounter.increment();

        _safeMint(address(this), currnetTokenId);

        metadata[currnetTokenId] = IReceipt.Receipt({
            amount: _amount,
            timestamp: _timestamp,
            token: _token,
            nonce: uint96(currnetTokenId),
            payer: _from,
            recipient: _to,
            payerName: _fromName,
            recipientName: _toName
        });

        return currnetTokenId;
    }

    function updateNickname(
        uint256 _tokenId,
        string calldata _newName,
        bytes calldata _signature
    ) external {
        ReceiptBridge(owner()).ensureSignature(
            _tokenId,
            msg.sender,
            _newName,
            _signature
        );

        if (metadata[_tokenId].payer == msg.sender) {
            metadata[_tokenId].payerName = _newName;
        } else if (metadata[_tokenId].recipient == msg.sender) {
            metadata[_tokenId].recipientName = _newName;
        }
    }

    function tokenId() external view returns (uint256) {
        return _tokenIdCounter.current();
    }
}

