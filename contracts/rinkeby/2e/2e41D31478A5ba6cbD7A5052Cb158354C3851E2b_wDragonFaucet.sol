pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "./ReentrancyGuard.sol";

// send wDragon token to specified user and append the user address to repicient list
contract wDragonFaucet is Ownable, ReentrancyGuard {
    IERC20 public wDragon; // token to donate    
    mapping(address => uint256) recipients; /*  Save donation amount for each user 
                                                recipients[address] = donationAmount
                                            */
    constructor(address _token) {
        wDragon = IERC20(_token);
    }

    event transferred(address indexed recipient, uint256 amount);

    // send token and append user info (address and donation amount) to the repicient list
    function transfer(address _recipient, uint256 _amount) external nonReentrant {
        uint256 balance = wDragon.balanceOf(address(this));
        require(balance > _amount, "insufficient balance");
        wDragon.transfer(_recipient, _amount);
        recipients[_recipient] = recipients[_recipient] + _amount;

        emit transferred(_recipient, _amount);
    }

    // withdraw token from faucet
    function withdraw() external onlyOwner {
        uint256 balance = wDragon.balanceOf(address(this));
        require(balance > 0, "zero token amount");
        wDragon.transfer(msg.sender, balance);
    }
}

