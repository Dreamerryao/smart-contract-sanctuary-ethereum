contract SmallestRacingTokenCreateFactory is Ownable,IRacingTokenCreateFactory {    
    address racingTokenRouter;
    mapping(uint256 => RaceInformation) raceInformation;
    uint256[] public raceId;
    
    
    function startRacingToken(
        address raceRouter,
        string memory name,
        string memory symbol,
        uint totalSupply,
        uint32 id,
        uint32 totalParticipants) external override returns (address smallestRaceAddress) {
        require(msg.sender == racingTokenRouter, "Only RacingTokenRouter");
        SmallestRaceBasement smallestRace = new SmallestRaceBasement();
        smallestRace.init(address(raceRouter), symbol, name, totalSupply);
        RaceInformation storage newRaceInformation = raceInformation[id];
        newRaceInformation.id = id;
        newRaceInformation.routerAddress=raceRouter;
        newRaceInformation.name = name;        
        newRaceInformation.symbol = symbol;
        newRaceInformation.totalSupply = totalSupply;
        newRaceInformation.totalParticipants = totalParticipants;
        raceId.push(id);
        return address(smallestRace);
    }   
    
     /**
     * @notice Set the address for the RacingTokenRouter
     * @param _racingTokenRouter: address of the Racing Token Router
     */
    function setRacingTokenRouterAddress(address _racingTokenRouter) external onlyOwner {
        racingTokenRouter = _racingTokenRouter;
    }
    
    
    function getRaceInformation(uint32 id) external override view returns(uint32, string memory,string memory, uint256, uint32) {
      RaceInformation storage findRaceInformation = raceInformation[id];
      return (findRaceInformation.id,findRaceInformation.name,findRaceInformation.symbol,findRaceInformation.totalSupply,findRaceInformation.totalParticipants);
    }

}