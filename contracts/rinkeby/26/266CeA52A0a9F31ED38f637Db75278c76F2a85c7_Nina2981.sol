import "./ABDKMathQuad.sol";

library RatioMath {
    
    uint public constant _precision = 10000;
    
    function get_percentage (uint percentage_decimal)
      public pure returns (uint) {
        return
          ABDKMathQuad.toUInt (
            ABDKMathQuad.div (
              ABDKMathQuad.mul (
                ABDKMathQuad.fromUInt (percentage_decimal),
                ABDKMathQuad.fromUInt (_precision)
              ),
              ABDKMathQuad.fromUInt (100)
            )
          );
    }
    
    function apply_percentage(uint value,uint percentage) public pure returns(uint256){
        return ABDKMathQuad.toUInt (
            ABDKMathQuad.div(
                ABDKMathQuad.mul(
                    ABDKMathQuad.fromUInt(value),//X
                    ABDKMathQuad.fromUInt(percentage)//Y
                ),
                ABDKMathQuad.fromUInt(_precision)//Z
            )
        );
    }    
}

