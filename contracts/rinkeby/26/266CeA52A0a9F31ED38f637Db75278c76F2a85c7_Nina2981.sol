import "@openzeppelin/contracts/access/Ownable.sol";
import '@openzeppelin/contracts/token/ERC1155/extensions/ERC1155Supply.sol';
import '@openzeppelin/contracts/token/ERC1155/ERC1155.sol';
import "@openzeppelin/contracts/utils/Strings.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

import "./libs/RatioMath.sol";

import "./interfaces/IMarketplace.sol";
import "./interfaces/INinaToken.sol";

contract Nina2981 is ERC1155Supply, Ownable{//ERC2981PerTokenRoyalties
  using Strings for string;
  using SafeMath for uint256;

  struct Art {
    uint256 id;
    address artist;
    string uri;
    string[] tags;
    IMarketplace marketplace;
  }

  struct RoyaltyInfo {
    address recipient;
    uint24 amount;
  }

  mapping(uint256 => RoyaltyInfo) internal _royalties;

  uint256 public _currentTokenID = 0;
  mapping (uint256 => mapping (address => string[])) private tags_balance;//tokenId -> owner -> tags
  mapping(uint256 => Art) public arts; //tokenId => Art  

  string public name;  
  string public symbol;  
  string public baseURI;

  // Bytes4 Code for EIP-2981
  bytes4 private constant _INTERFACE_ID_ERC2981 = 0x2a55205a;

  // Mappings _tokenID -> values
  mapping(uint256 => address) receiver;
  mapping(uint256 => uint256) royaltyPercentage;

  //IMarketplace marketplace;

  constructor() ERC1155 ("") {      
    name = "Nina 1155 Token";
    symbol = "NT";
    baseURI = "";

    //marketplace = IMarketplace(market_addr);
  }  

  modifier OnlyAllowedArtistsOrMarketManager(address market_addr){
    IMarketplace marketplace = IMarketplace(market_addr);
    require(
      marketplace.artists(msg.sender) || 
      marketplace.register_wallet() == msg.sender ||
      marketplace.owner() == msg.sender
      , "Sender is not an allowed artist");
    _;
  }

  /// @inheritdoc	ERC165
  function supportsInterface(bytes4 interfaceId)
    public
    view
    virtual
    override(ERC1155)
    returns (bool)
  {
    return super.supportsInterface(interfaceId);
  }
  
  function uri(
    uint256 _id
  ) public view override returns (string memory) {
    require(exists(_id), "ERC1155: NONEXISTENT_TOKEN");
    return string(abi.encodePacked(baseURI, arts[_id].uri));
  }  
  
  function create(
    address _initialOwner,
    //uint256 _initialSupply,
    string calldata _uri,
    string[] memory _tags,
    address market_addr
  ) external OnlyAllowedArtistsOrMarketManager(market_addr) returns (uint256)  {    
    uint256 _id = _currentTokenID.add(1);
    _currentTokenID++;
    IMarketplace marketplace = IMarketplace(market_addr);

    if (bytes(_uri).length > 0) {
      emit URI(_uri, _id);
    }

    address royaltyRecipient = _initialOwner;
    uint256 royaltyValue = marketplace.fee_royalties();

    _setTokenRoyalty(_id,royaltyRecipient,royaltyValue);
    _mint(_initialOwner, _id, _tags.length, "0x00");    
            
    arts[_id] = Art({
      id: _id, 
      artist: _initialOwner,
      uri: _uri,
      tags: _tags,
      marketplace: marketplace
    });

    tags_balance[_id][_initialOwner] = _tags;

    marketplace.setExclusive(_id, _initialOwner, true);
    
    return _id;
  }

  function isOwnerOf(address owner,uint256 tokenId) external view returns (bool) {
    return balanceOf(owner, tokenId) != 0;
  }

  function artistOf(uint256 tokenId) external view returns (address) {
    require(tokenId <= _currentTokenID, "tokenId not found");
    return arts[tokenId].artist;
  }

  function transferTags(address from, address to, uint256 id, uint256 amount) internal {
    require(tags_balance[id][from].length >= amount, "The owner  doesnt have the amount");    
    for (uint256 i = 0; i < amount; ++i) {
      string storage tag = tags_balance[id][from][tags_balance[id][from].length -1];
      tags_balance[id][from].pop();
      tags_balance[id][to].push(tag);
    }
  } 

  function safeTransferFrom(address from, address to, uint256 id, uint256 amount, bytes memory data) public virtual override {
    
    require(!arts[id].marketplace.exclusive_tokens(id,from) || msg.sender == address(arts[id].marketplace),"Exclusive Marketplace token");
        
    transferTags(from,to,id,amount);

    return super.safeTransferFrom(from, to, id, amount, data);
  }

  function safeBatchTransferFrom(address from, address to, uint256[] memory ids, uint256[] memory amounts, bytes memory data) public virtual override {
    for (uint256 i = 0; i < ids.length; ++i) {
      require(!arts[ids[i]].marketplace.exclusive_tokens(ids[i],from) || msg.sender == address(arts[ids[i]].marketplace),"Exclusive Marketplace token");
      transferTags(from,to,ids[i],amounts[i]);
    }    
    return super.safeBatchTransferFrom(from, to, ids, amounts, data);
  }

  function _setTokenRoyalty(
    uint256 tokenId,
    address recipient,
    uint256 value
  ) internal {
    require(value <= 10000, 'ERC2981Royalties: Too high');
    _royalties[tokenId] = RoyaltyInfo(recipient, uint24(value));
  }

  function royaltyInfo(uint256 tokenId, uint256 value)
    external
    view
    returns (address,uint256)
  {
    RoyaltyInfo memory royalties = _royalties[tokenId];
    address _receiver = royalties.recipient;
    uint256 royaltyAmount = (value * royalties.amount) / 10000;
    return (_receiver,royaltyAmount);
  }

  function getTagsOf(uint tokenId) public view returns(string[] memory){
    return tags_balance[tokenId][msg.sender];
  }
}

