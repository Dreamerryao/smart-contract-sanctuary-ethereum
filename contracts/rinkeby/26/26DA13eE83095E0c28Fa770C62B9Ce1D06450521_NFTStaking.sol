pragma solidity ^0.8.0;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";


contract NFTStaking is Ownable {

    using SafeMath for uint256;
    uint[4] rewardPercentage = [10,20,50,80];

    IERC20 public rewardsToken;
    IERC721 public parentNFT;

    uint256 public multiplier = 1;

    /**
    @notice Struct to track what user is staking which tokens
    @dev tokenIds are all the tokens staked by the staker
    @dev balance is the current ether balance of the staker
    @dev rewardsEarned is the total reward for the staker till now
    @dev rewardsReleased is how much reward has been paid to the staker
    */
    struct Staker {
        uint256[] tokenIds;
        mapping (uint256 => uint256) tokenIndex;
        uint256 lastUpdate;
        uint256 rewardsClaimed;
    }

    struct MetaData{
        uint256 STR;
        uint256 DEX;
        uint256 INT;
        uint256 HP;
        uint256 MP;
        uint256 LEVEL;
    }
    /// @notice mapping of a staker to its current properties
    mapping (address => Staker) public stakers;

     // Mapping from token ID to metadata
    mapping (uint256 => MetaData) public tokenMetadata;

    // Mapping from token ID to owner address
    mapping (uint256 => address) public tokenOwner;

    /// @notice sets the token to be claimable or not, cannot claim if it set to false
    bool public tokensClaimable;
    bool initialised;

    /// @notice event emitted when a user has staked a token
    event Staked(address owner, uint256 amount);

    /// @notice event emitted when a user has unstaked a token
    event Unstaked(address owner, uint256 amount);

    /// @notice event emitted when a user claims reward
    event RewardPaid(address indexed user, uint256 reward);
    
    /// @notice Allows reward tokens to be claimed
    event ClaimableStatusUpdated(bool status);

    event RewardsTokenUpdated(address _addr);

    event NFTAddressUpdated(address _addr);

    constructor()  {
    }
    
    function initStaking(
        IERC20 _rewardsToken,
        IERC721 _parentNFT
    )
        external
    {
        require(!initialised, "Already initialised");
        rewardsToken = _rewardsToken;
        parentNFT = _parentNFT;
        initialised = true;
    }


    /// @notice Lets admin set the Rewards Token
    function setRewardsToken(
        address _addr
    )
        external onlyOwner
    {
        
        require(_addr != address(0));
        rewardsToken = IERC20(_addr);
        emit RewardsTokenUpdated(_addr);
    }

     /// @notice Lets admin set the Rewards Token
    function setNFTContract(
        address _addr
    )
        external onlyOwner
    {
        
        require(_addr != address(0));
        parentNFT = IERC721(_addr);
        emit NFTAddressUpdated(_addr);
    }

    /// @notice Lets admin set the Rewards to be claimable
    function setTokensClaimable(
        bool _enabled
    )
        external onlyOwner
    {
       
        tokensClaimable = _enabled;
        emit ClaimableStatusUpdated(_enabled);
    }

    /// @dev Getter functions for Staking contract
    /// @dev Get the tokens staked by a user
    function getStakedTokens(
        address _user
    )
        external
        view
        returns (uint256[] memory tokenIds)
    {
        return stakers[_user].tokenIds;
    }


   

    /// @notice Stake  NFTs and earn reward tokens. 
    function stake(
        uint256 tokenId,
        uint256 _STR,
        uint256 _DEX,
        uint256 _INT,
        uint256 _HP,
        uint256 _MP,
        uint256 _LEVEL   
    )
        external
    {
        // require();
        MetaData storage meta = tokenMetadata[tokenId];

        meta.STR = _STR;
        meta.DEX = _DEX;
        meta.INT = _INT;
        meta.HP = _HP;
        meta.MP = _MP;
        meta.LEVEL = _LEVEL;
        _stake(msg.sender, tokenId);
    }



    /**
     * @dev All the staking goes through this function
     * @dev Rewards to be given out is calculated
     * @dev Balance of stakers are updated as they stake the nfts based on ether price
    */
    function _stake(
        address _user,
        uint256 _tokenId
    )
        internal
    {
        Staker storage staker = stakers[_user];
        staker.tokenIds.push(_tokenId);
        staker.tokenIndex[staker.tokenIds.length - 1];
        staker.lastUpdate = block.timestamp;
        tokenOwner[_tokenId] = _user;
        parentNFT.safeTransferFrom(
            _user,
            address(this),
            _tokenId
        );

        emit Staked(_user, _tokenId);
    }

    /// @notice Unstake   NFTs. 
    function unstake(
        uint256 _tokenId
    ) 
        external 
    {
        require(
            tokenOwner[_tokenId] == msg.sender,
            "ParentStaking._unstake: Sender must have staked tokenID"
        );
        
        _unstake(msg.sender, _tokenId);
    }

    /// @notice Stake multiple  NFTs and claim reward tokens. 
    function unstakeBatch(
        uint256[] memory tokenIds
    )
        external
    {
        
        for (uint i = 0; i < tokenIds.length; i++) {
            if (tokenOwner[tokenIds[i]] == msg.sender) {
                _unstake(msg.sender, tokenIds[i]);
            }
        }
    }

     /**
     * @dev All the unstaking goes through this function
     * @dev Rewards to be given out is calculated
     * @dev Balance of stakers are updated as they unstake the nfts based on ether price
    */
    function _unstake(
        address _user,
        uint256 _tokenId
    ) 
        internal 
    {
        Staker storage staker = stakers[_user];

        uint256 lastIndex = staker.tokenIds.length - 1;
        uint256 lastIndexKey = staker.tokenIds[lastIndex];
        uint256 tokenIdIndex = staker.tokenIndex[_tokenId];
        
        staker.tokenIds[tokenIdIndex] = lastIndexKey;
        staker.tokenIndex[lastIndexKey] = tokenIdIndex;
        if (staker.tokenIds.length > 0) {
            staker.tokenIds.pop();
            delete staker.tokenIndex[_tokenId];
        }

        if (staker.tokenIds.length == 0) {
            delete stakers[_user];
        }
        delete tokenOwner[_tokenId];

        parentNFT.safeTransferFrom(
            address(this),
            _user,
            _tokenId
        );

        emit Unstaked(_user, _tokenId);

    }


    /// @notice Lets a user with rewards owing to claim tokens --EDIT
    function claimReward(
        uint256 _tokenId
    )
        public
    {
        require(
            tokensClaimable == true,
            "Tokens cannnot be claimed yet"
        );
        
         require(
            tokenOwner[_tokenId] == msg.sender,
            "you are not owner of token"
        );

        Staker storage staker = stakers[msg.sender];
        require(
            block.timestamp >= staker.lastUpdate + 24 hours, "please claim after 24 hours "
        );
        MetaData storage meta = tokenMetadata[_tokenId];
        uint first = 0;
        uint256 payableAmount = first.add(meta.STR).add(meta.DEX).add(meta.INT).add(meta.HP).add(meta.MP).mul(meta.LEVEL).mul(multiplier); 
        uint newPayableAmount = _calculateRandomAmount(payableAmount);       
        staker.rewardsClaimed = staker.rewardsClaimed.add(newPayableAmount);


        require(
            newPayableAmount < rewardsToken.balanceOf(address(this)), "reward token is not available now collect next time please "
        );
        
        rewardsToken.transfer(msg.sender, newPayableAmount);
        emit RewardPaid(msg.sender, newPayableAmount);
    }

    function _calculateRandomAmount(
        uint256 _payableAmount
    )
        internal
        view
        returns(uint256)
    {

       uint256 value = _random(rewardPercentage.length);
       uint256 amount = (_payableAmount * rewardPercentage[value - 1]) / 100;
       return amount * 10 ** 18;

    }

    function _random(uint _number) internal view returns(uint){
        return uint(keccak256(abi.encodePacked(block.timestamp,block.difficulty,  
        msg.sender))) % _number;
    }

    function totalRewardTokenAvailable() public view returns(uint){
        return rewardsToken.balanceOf(address(this));
    }
}

