import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";

contract WhitelistTransferERC1155 is Ownable {
    using ECDSA for bytes32;
    address whitelistSigner;

    bool paused;
    // tokenId => account => isProcessed
    mapping (uint256 => mapping(address => uint256)) public addressProcessed;
    // tokenId => limit
    mapping (uint256 => uint256) public limitByTokenId;
    IERC1155 public erc1155Contract;
    address public bankWallet;

    event Processed(address account, uint256 tokenId, uint256 amount);
    event UpdateLimitByTokenId(uint256 tokenId, uint256 amount);
    event UpdateBankWallet(address bankWallet);
    event UpdateContract(address erc1155Contract);
    event Paused(bool status);

    modifier notPaused() {
        require(!paused, "Contract paused");
        _;
    }

    modifier notContract() {
        require(msg.sender == tx.origin, "Only user call is allowed");
        _;
    }

    constructor(address _erc1155Contract, address _bankWallet) {
        updateBank(_bankWallet);
        updateContract(_erc1155Contract);
        updateLimitByTokenId(1,1);
    }

    function mintNFT(uint256 _tokenId, bytes memory _signature) public notPaused notContract {
        uint256 mintableAmount = limitByTokenId[_tokenId] - addressProcessed[_tokenId][msg.sender];
        require(mintableAmount > 0, "Limit is exceeded");
        (bool success, string memory reason) = canTransfer(msg.sender, _tokenId, _signature);
        require(success, reason);

        erc1155Contract.safeTransferFrom(bankWallet, msg.sender, _tokenId, mintableAmount, "");
        addressProcessed[_tokenId][msg.sender] += mintableAmount;
        emit Processed(msg.sender, _tokenId, mintableAmount);
    }

    function canTransfer(address _address, uint256 _tokenId, bytes memory _signature) public view returns (bool, string memory) {
//        bytes32 hash = keccak256(abi.encodePacked(whitelistSigner, _address, _tokenId));
//        bytes32 messageHash = hash.toEthSignedMessageHash();
//
//        address signer = messageHash.recover(_signature);
//
//        if (signer != whitelistSigner) {
//            return (false, "Invalid signature");
//        }

        return (true, "");
    }

    function pause(bool status) external onlyOwner {
        paused = status;
        emit Paused(status);
    }

    function updateContract(address _erc1155Contract) public onlyOwner {
        erc1155Contract = IERC1155(_erc1155Contract);
        emit UpdateContract(_erc1155Contract);
    }

    function updateBank(address _bankWallet) public onlyOwner {
        bankWallet = _bankWallet;
        emit UpdateBankWallet(_bankWallet);
    }

    function updateLimitByTokenId(uint256 _tokenId, uint256 _limit) public onlyOwner {
        limitByTokenId[_tokenId] = _limit;
        emit UpdateLimitByTokenId(_tokenId, _limit);
    }

    function withdraw() public onlyOwner {
        uint256 balance = address(this).balance;
        payable(msg.sender).transfer(balance);
    }
}

