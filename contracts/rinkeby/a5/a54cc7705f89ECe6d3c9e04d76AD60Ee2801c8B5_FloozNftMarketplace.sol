import { EnumerableSetUpgradeable } from "@openzeppelin/contracts-upgradeable/utils/structs/EnumerableSetUpgradeable.sol";

import { IMarketplace } from "./interfaces/IMarketplace.sol";
import { BasicMetaTransaction } from "./interfaces/BasicMetaTransaction.sol";

abstract contract MarketplaceBase is
    BasicMetaTransaction,
    Initializable,
    UUPSUpgradeable,
    OwnableUpgradeable,
    IMarketplace
{
    using EnumerableSetUpgradeable for EnumerableSetUpgradeable.UintSet;

    error InvalidTokenId(address tokenAddress, uint256 tokenId);
    error InvalidTokenAddress(address tokenAddress);
    error InvalidPaymentToken(address paymentToken);
    error InvalidListing(uint256 listingId);
    error InvalidListingType(uint256 listingId);
    error InvalidSeller(address tokenAddress, uint256 tokenId, address sender);
    error InvalidOffer(address tokenAddress, uint256 tokenId, address maker);
    error InvalidOfferValue(uint256 offerValue);
    error InvalidStartDate();
    error InvalidBid();

    error TokenAlreadyListed(address tokenAddress, uint256 tokenId);
    error ListingEnded(uint256 listingId, uint256 endDate);
    error AuctionNotEnded(uint256 listingId, uint256 timestamp);
    error ReachedMaxListingLimit();

    error InsufficientPublicationFeePaid(uint256 publicationFee, uint256 amountPaid);
    error InsufficientBalance(address buyer, uint256 value, uint256 balance);

    error NoApproval(address tokenAddress, uint256 tokenId, address spender);
    error NoAllowance(address paymentToken, uint256 amount, address sender);
    error NotAllowed(uint256 listingId, address sender);

    error RoyaltyDistributionFailed(address tokenAddress, uint256 tokenId);
    error MarketplaceFeeFailed(uint256 listingId, address paymentToken);

    mapping(uint256 => Listing) public listings;

    mapping(uint256 => mapping(bytes32 => Bid)) bids;

    mapping(address => mapping(uint256 => mapping(bytes32 => Offer))) public offers;

    mapping(address => mapping(uint256 => bool)) public activeListings;

    mapping(address => bool) public acceptedTokenMap;

    uint256 public marketplaceFee;
    uint256 public publicationFeeInWei;
    uint256 public referralReward;

    address public feeReceiver;

    bytes4 internal constant _INTERFACE_ID_ERC2981 = 0x2a55205a;
    bytes4 internal constant _INTERFACE_ID_ROYALTYENGINEV1 = 0xcb23f816;

    function baseInitialize(address newOwner) internal {
        __Ownable_init();
        __UUPSUpgradeable_init();
        _transferOwnership(newOwner);
    }
}

