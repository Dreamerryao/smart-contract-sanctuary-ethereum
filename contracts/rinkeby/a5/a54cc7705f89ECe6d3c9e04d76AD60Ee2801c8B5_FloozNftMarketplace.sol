import { MarketplaceBase } from "./MarketplaceBase.sol";
import { WETH } from "@rari-capital/solmate/src/tokens/WETH.sol";
import { IERC20 } from "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import { IERC721 } from "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import { CountersUpgradeable } from "@openzeppelin/contracts-upgradeable/utils/CountersUpgradeable.sol";
import { ERC165CheckerUpgradeable } from "@openzeppelin/contracts-upgradeable/utils/introspection/ERC165CheckerUpgradeable.sol";

import { IERC2981Royalties } from "./interfaces/IERC2981Royalties.sol";
import { IRoyaltyRegistry } from "./interfaces/IRoyaltyRegistry.sol";
import { IRoyaltyEngineV1 } from "./interfaces/IRoyaltyEngineV1.sol";

/// @title Flooz Nft Marketplace
/// @author Florian Pohl @ flooz.inc
/// @notice Decentralized nft marketplace that supports bids, offers and listings
contract FloozNftMarketplace is MarketplaceBase {
    using CountersUpgradeable for CountersUpgradeable.Counter;
    using ERC165CheckerUpgradeable for address;

    IRoyaltyRegistry public royaltyRegistry;
    WETH public weth;

    CountersUpgradeable.Counter internal _listingIdTracker;

    // Initialize

    /// @notice Initialises the contract after deployment
    /// @param initData ABI encoded data for initialization.
    /// Marketplace owner, royalty registry address and weth address
    function initialize(bytes calldata initData) public initializer {
        (address newOwner, address _royaltyregistry, address payable _weth) = abi.decode(
            initData,
            (address, address, address)
        );
        baseInitialize(newOwner);

        royaltyRegistry = IRoyaltyRegistry(_royaltyregistry);
        weth = WETH(_weth);
    }

    // Fallbacks

    receive() external payable {}

    // Proxy

    /// @notice Override `_authorizeUpgrade` to make it only callable by the marketplace owner
    /// @param implementation Address of the updated implementation.
    function _authorizeUpgrade(address implementation) internal override onlyOwner {}

    // Listings

    /// @notice Create between a listing
    /// @param listing the listing to be created
    /// @return Id of the created listing
    function createListing(Listing calldata listing) public payable returns (uint256) {
        require(validateListing(listing));

        uint256 listingId = _listingIdTracker.current();
        _listingIdTracker.increment();

        listings[listingId] = listing;
        activeListings[listing.tokenAddress][listing.tokenId] = true;

        emit NewListing(
            listingId,
            listing.tokenId,
            listing.seller,
            listing.tokenAddress,
            listing.priceInWei,
            listing.paymentToken,
            listing.endDate,
            listing.listingType
        );

        return listingId;
    }

    /// @notice Create between 1 - 10 listings in a batch
    /// @param _listings An array of up to 10 listings to be created
    /// @return An array of the created listings ids
    function createListings(Listing[] calldata _listings) external payable returns (uint256[] memory) {
        uint256[] memory listingIds = new uint256[](_listings.length);

        if (_listings.length > 10) {
            revert ReachedMaxListingLimit();
        }

        for (uint256 i = 0; i < _listings.length; i++) {
            listingIds[i] = createListing(_listings[i]);
        }

        return listingIds;
    }

    /// @notice Cancel a listing. Only the listing creator can
    /// cancel the corresponding listing.
    /// @param listingId Id of the cancelled listing
    function cancelListing(uint256 listingId) public {
        Listing storage listing = _verifyListingAccess(listingId, true);

        activeListings[listing.tokenAddress][listing.tokenId] = false;
        delete listings[listingId];

        emit ListingCancelled(listingId, listing.seller, listing.tokenAddress);
    }

    /// @notice Batch cancel listings. Only the listing creator can
    /// cancel the corresponding listing.
    /// @param listingIds An array of listing ids to be cancelled
    function cancelListings(uint256[] calldata listingIds) external {
        for (uint256 i = 0; i < listingIds.length; i++) {
            cancelListing(listingIds[i]);
        }
    }

    // Offers

    /// @notice Create an offer for a (un)listed token
    /// @param offer The offer to be created
    function makeOffer(Offer calldata offer) external {
        if (!acceptedTokenMap[offer.paymentToken]) revert InvalidPaymentToken(offer.paymentToken);

        bytes32 offerHash = keccak256(abi.encode(offer));

        address sender = _msgSender();

        if (sender != offer.maker) {
            revert InvalidOffer(offer.tokenAddress, offer.tokenId, sender);
        }

        uint256 balance = IERC20(offer.paymentToken).balanceOf(sender);
        if (balance < offer.price) revert InsufficientBalance(sender, offer.price, balance);

        offers[offer.tokenAddress][offer.tokenId][offerHash] = offer;

        uint256 allowance = IERC20(offer.paymentToken).allowance(sender, address(this));

        if (allowance < offer.price) {
            //placeholder
            revert NoAllowance(offer.paymentToken, allowance, sender);
        }

        emit NewOffer(offer.tokenAddress, offer.tokenId, offer.price, sender);
    }

    /// @notice Cancel an offer.
    /// @param offer The offer to be cancelled
    function cancelOffer(Offer calldata offer) external {
        address sender = _msgSender();
        bytes32 offerHash = keccak256(abi.encode(offer));

        if (offers[offer.tokenAddress][offer.tokenId][offerHash].maker != sender) {
            revert InvalidOffer(offer.tokenAddress, offer.tokenId, sender);
        }

        delete offers[offer.tokenAddress][offer.tokenId][offerHash];

        emit OfferCancelled(offer.tokenAddress, offer.tokenId, sender);
    }

    /// @notice Cancel an offer.
    /// @param _offer The offer to be cancelled
    function acceptOffer(Offer calldata _offer) external {
        bytes32 offerHash = keccak256(abi.encode(_offer));

        Offer storage offer = offers[_offer.tokenAddress][_offer.tokenId][offerHash];

        if (offer.maker != _offer.maker) {
            revert InvalidOffer(offer.tokenAddress, offer.tokenId, _msgSender());
        }

        address seller = IERC721(offer.tokenAddress).ownerOf(offer.tokenId);

        if (seller != _msgSender()) revert NotAllowed(0, _msgSender());

        uint256 balance = IERC20(offer.paymentToken).balanceOf(offer.maker);
        if (balance < offer.price) revert InsufficientBalance(offer.maker, offer.price, balance);

        uint256 allowance = IERC20(offer.paymentToken).allowance(offer.maker, address(this));

        if (allowance < offer.price) {
            revert NoAllowance(offer.paymentToken, allowance, offer.maker);
        }

        uint256 amountPaidToSeller = _takeMarketplaceFee(0, offer.price, offer.paymentToken, address(0), offer.maker);

        require(_finalizeOffer(offer, amountPaidToSeller, seller));

        emit OfferAccepted(offer.tokenAddress, offer.tokenId);
    }

    // Bids

    /// @notice Place a bid for an active auction
    /// @param listingId The id of the listing for this auction
    /// @param bid The bid to be placed
    function makeBid(uint256 listingId, Bid calldata bid) external {
        address sender = _msgSender();

        if (sender != bid.maker) revert NotAllowed(listingId, sender);

        Listing storage listing = _verifyListingAccess(listingId, false);
        if (listing.minBid > 0 && bid.value < listing.minBid) revert InvalidBid();

        bytes32 bidHash = keccak256(abi.encode(bid));

        bytes32 highestBidHash = listing.highestBid;
        Bid memory highestBid = bids[listingId][highestBidHash];

        if (bid.value < highestBid.value || bid.maker != sender) revert InvalidBid();

        if (listing.listingType != ListingType.Auction) {
            revert InvalidListingType(listingId);
        }

        IERC20 paymentToken = IERC20(listing.paymentToken);

        uint256 balance = paymentToken.balanceOf(sender);
        if (balance < bid.value) revert InsufficientBalance(sender, bid.value, balance);

        uint256 allowance = paymentToken.allowance(sender, address(this));
        if (allowance < bid.value) {
            revert NoAllowance(listing.paymentToken, bid.value, sender);
        }

        listing.highestBid = bidHash;
        bids[listingId][bidHash] = bid;
        listing.orderedBidHashes.push(bidHash);

        emit NewBid(listingId, bid.value, sender);
    }

    /// @notice Cancel a placed bid
    /// @param listingId The id of the listing for this auction
    /// @param bid The bid to be cancelled
    function cancelBid(uint256 listingId, Bid calldata bid) external {
        address sender = _msgSender();
        Listing storage listing = _verifyListingAccess(listingId, false);

        bytes32 bidHash = keccak256(abi.encode(bid));

        if (bids[listingId][bidHash].maker == address(0)) revert InvalidBid();

        if (listing.highestBid == bidHash) {
            listing.orderedBidHashes.pop();
            bytes32 newHighestBidHash;
            if (listing.orderedBidHashes.length > 0) {
                newHighestBidHash = listing.orderedBidHashes[listing.orderedBidHashes.length - 1];
            }

            listing.highestBid = newHighestBidHash;

            delete bids[listingId][bidHash];
        } else {
            delete bids[listingId][bidHash];
        }

        emit BidCancelled(listingId, sender);
    }

    // Execution

    /// @notice Execute a finished auction
    /// @param listingId The id of the listing for this auction
    /// @param referee The referee. Address(0) if none.
    function executeAuction(uint256 listingId, address referee) external payable {
        Listing storage listing = _verifyListingAccess(listingId, false);

        bytes32 highestBidHash = listing.highestBid;
        Bid memory highestBid = bids[listingId][highestBidHash];

        if (highestBid.maker == address(0)) revert InvalidBid();

        if (block.timestamp < listing.endDate) {
            revert AuctionNotEnded(listing.listingId, block.timestamp);
        }

        (bool royaltiesCalculated, address payable[] memory recipients, uint256[] memory amounts) = _calculateRoyalties(
            listing.tokenId,
            highestBid.value,
            listing.tokenAddress
        );

        uint256 royaltiesTotal;

        if (royaltiesCalculated)
            royaltiesTotal = _payOutRoyalties(listing.paymentToken, highestBid.maker, recipients, amounts);

        uint256 amountPaidToSeller = _takeMarketplaceFee(
            royaltiesTotal,
            highestBid.value,
            listing.paymentToken,
            referee,
            highestBid.maker
        );

        require(_finalizeListing(listing, amountPaidToSeller, highestBid.maker), "Could not finalize");

        emit AuctionFinished(listing.tokenId, listing.tokenAddress, highestBid.value);
    }

    /// @notice Execute a listing for a fixed price.
    /// @param listingId The id of the listing
    /// @param referee The referee. Address(0) if none.
    function executeListing(uint256 listingId, address referee) public payable {
        address sender = _msgSender();
        uint256 totalAmountToPay;

        Listing storage listing = listings[listingId];

        if (block.timestamp > listing.endDate) revert ListingEnded(listingId, listing.endDate);

        if (listing.whitelist.length > 0) {
            bool isOnWhitelist;
            for (uint256 j = 0; j < listing.whitelist.length; j++) {
                if (listing.whitelist[j] == sender) isOnWhitelist = true;
            }
            if (!isOnWhitelist) revert NotAllowed(listingId, sender);
        }

        (bool royaltiesCalculated, address payable[] memory recipients, uint256[] memory amounts) = _calculateRoyalties(
            listing.tokenId,
            listing.priceInWei,
            listing.tokenAddress
        );

        uint256 royaltiesTotal;
        if (royaltiesCalculated) royaltiesTotal = _payOutRoyalties(listing.paymentToken, sender, recipients, amounts);

        uint256 amountPaidToSeller = _takeMarketplaceFee(
            royaltiesTotal,
            listing.priceInWei,
            listing.paymentToken,
            referee,
            sender
        );

        totalAmountToPay += listing.priceInWei;

        require(_finalizeListing(listing, amountPaidToSeller, _msgSender()), "Could not finalize");

        emit ListingFinished(listingId, listing.tokenId, listing.tokenAddress);
    }

    /// @notice Execute multiple listing for a fixed price
    /// @param listingIds The ids of the listings
    /// @param referees The referees. Address(0) if none.
    function executeListings(uint256[] calldata listingIds, address[] calldata referees) external payable {
        address sender = _msgSender();
        uint256 totalAmountToPay;

        for (uint256 i = 0; i < listingIds.length; i++) {
            executeListing(listingIds[i], referees[i]);
        }
    }

    // Admin functions

    /// @notice Set a token to be allowed as payment token
    /// @param token Address of the token to be approved
    /// @param approval State of the payment token approval
    function setPaymentToken(address token, bool approval) public onlyOwner {
        _setPaymentToken(token, approval);
        emit ChangedAcceptedToken(token, approval);
    }

    /// @notice Set the publication fee
    /// @param publicationFee New publication fee
    function setPublicationFee(uint256 publicationFee) public onlyOwner {
        _setPublicationFee(publicationFee);
        emit ChangedPublicationFee(publicationFee);
    }

    /// @notice Set the marketplace fee
    /// @param marketplaceFee New marketplace fee
    function setMarketplaceFee(uint256 marketplaceFee) public onlyOwner {
        _setMarketplaceFee(marketplaceFee);
        emit ChangedMarketplaceFee(marketplaceFee);
    }

    /// @notice Set the receiver for marketplace fees
    /// @param feeReceiver New fee receiver
    function setFeeReceiver(address feeReceiver) public onlyOwner {
        _setFeeReceiver(feeReceiver);
        emit ChangedFeeReceiver(feeReceiver);
    }

    /// @notice Set the royalty registry address
    /// @param _royaltyRegistry New royalty registry address
    function setRoyaltyRegistry(address _royaltyRegistry) public onlyOwner {
        _setRoyaltyRegistry(_royaltyRegistry);
        emit ChangedRoyaltyRegistry(_royaltyRegistry);
    }

    /// @notice Set the referral fee
    /// @param newReward New referral reward
    function setReferralReward(uint256 newReward) public onlyOwner {
        _setReferralReward(newReward);
        emit ChangedReferralReward(newReward);
    }

    // Internal functions

    /// @notice Validate that a listing has all the required parameters set.
    /// @param listing The listing to be validated
    function validateListing(Listing calldata listing) internal returns (bool) {
        if (listing.tokenAddress == address(0)) {
            revert InvalidTokenAddress(listing.tokenAddress);
        }

        address tokenAddress = listing.tokenAddress;
        uint256 tokenId = listing.tokenId;

        IERC721 nft = IERC721(tokenAddress);

        address tokenOwner = nft.ownerOf(tokenId);

        if (tokenOwner != listing.seller || tokenOwner != _msgSender()) {
            revert InvalidSeller(tokenAddress, tokenId, _msgSender());
        }

        if (activeListings[tokenAddress][tokenId] == true) {
            revert TokenAlreadyListed(tokenAddress, tokenId);
        }

        if (msg.value < publicationFeeInWei) {
            revert InsufficientPublicationFeePaid(publicationFeeInWei, msg.value);
        }

        if (nft.getApproved(tokenId) != address(this) && nft.isApprovedForAll(tokenOwner, address(this)) == false) {
            revert NoApproval(tokenAddress, tokenId, address(this));
        }

        if (acceptedTokenMap[listing.paymentToken] == false) {
            revert InvalidPaymentToken(listing.paymentToken);
        }

        if (listing.startDate < block.timestamp || listing.startDate >= listing.endDate) {
            revert InvalidStartDate();
        }

        if (listing.orderedBidHashes.length != 0 || listing.highestBid != bytes32(0)) {
            revert InvalidBid();
        }

        return true;
    }

    /// @notice Finalize an offer
    /// @param offer The offer to be finalized
    /// @param amountPaidOut The amount paid to the seller with all fees subtracted
    /// @param seller The address of the seller
    function _finalizeOffer(
        Offer memory offer,
        uint256 amountPaidOut,
        address seller
    ) internal returns (bool) {
        IERC721(offer.tokenAddress).transferFrom(seller, offer.maker, offer.tokenId);

        IERC20(offer.paymentToken).transferFrom(offer.maker, seller, amountPaidOut);

        return true;
    }

    /// @notice Finalize an listing
    /// @param listing The listing to be finalized
    /// @param amountPaidToSeller The amount paid to the seller with all fees subtracted
    /// @param recipient The address of the recipient
    function _finalizeListing(
        Listing memory listing,
        uint256 amountPaidToSeller,
        address recipient
    ) internal returns (bool) {
        activeListings[listing.tokenAddress][listing.tokenId] = false;

        address paymentToken = listing.paymentToken;
        address seller = listing.seller;
        address tokenAddress = listing.tokenAddress;
        uint256 tokenId = listing.tokenId;

        delete listings[listing.listingId];

        IERC721(tokenAddress).transferFrom(seller, recipient, tokenId);

        if (paymentToken == address(0)) {
            (bool success, ) = seller.call{ value: amountPaidToSeller }("");
            if (!success) revert("Not native");
        } else {
            IERC20(paymentToken).transferFrom(recipient, seller, amountPaidToSeller);
        }

        return true;
    }

    /// @notice Calculate and distribute marketplace fee and referral rewards
    /// @param royaltiesTotal Total amount of royalties paid
    /// @param listingPrice Price for this listing
    /// @param paymentToken The address of the payment token
    /// @param referee The address of the referee (receiver of referral reward)
    function _takeMarketplaceFee(
        uint256 royaltiesTotal,
        uint256 listingPrice,
        address paymentToken,
        address referee,
        address sender
    ) internal returns (uint256) {
        uint256 feeAmount = 0;
        uint256 referralAmount = 0;

        feeAmount = (listingPrice * marketplaceFee) / 1000000;

        referralAmount = _calculateReferral(referee, feeAmount);
        feeAmount = feeAmount - referralAmount;

        if (paymentToken == address(0) && marketplaceFee > 0) {
            if (feeReceiver != address(0)) {
                (bool feeSuccess, ) = feeReceiver.call{ value: feeAmount }("");
                require(feeSuccess, "Could not take Fee");
            }
            if (referee != address(0)) {
                (bool refSucess, ) = referee.call{ value: referralAmount }("");
                require(refSucess, "Could not take Fee");
            }
        } else if (marketplaceFee > 0) {
            if (feeReceiver != address(0)) require(IERC20(paymentToken).transferFrom(sender, feeReceiver, feeAmount));
            if (referee != address(0)) require(IERC20(paymentToken).transferFrom(sender, referee, referralAmount));
        }

        if (marketplaceFee > 0) emit MarketFeePaid(feeAmount);
        if (referee != address(0)) emit ReferralRewardPaid(referee, sender, referralAmount);

        return (listingPrice - royaltiesTotal - feeAmount - referralAmount);
    }

    /// @notice Calculate referral reward amount
    /// @param referee The address of the referee
    /// @param totalFeeAmount Total amount of fees the marketplace will take
    function _calculateReferral(address referee, uint256 totalFeeAmount) internal view returns (uint256) {
        if (referee == address(0)) return 0;

        return (totalFeeAmount * referralReward) / 1000000;
    }

    /// @notice Calculate referral reward amount
    /// @param paymentToken The address of the payment token
    /// @param recipients An array of royalty receipients
    /// @param amounts An Array of amounts corresponding to the recipients
    function _payOutRoyalties(
        address paymentToken,
        address sender,
        address payable[] memory recipients,
        uint256[] memory amounts
    ) internal returns (uint256) {
        uint256 royaltiesTotal = 0;

        if (paymentToken == address(0)) {
            for (uint256 i = 0; i < recipients.length; i++) {
                (bool feeSuccess, ) = recipients[i].call{ value: amounts[i] }("");
                royaltiesTotal += amounts[i];
            }
        } else {
            for (uint256 i = 0; i < recipients.length; i++) {
                IERC20(paymentToken).transferFrom(sender, recipients[i], amounts[i]);
                royaltiesTotal += amounts[i];
            }
        }

        return royaltiesTotal;
    }

    /// @notice Get royalty recipients and amounts
    /// @param tokenId Id of the listed token
    /// @param priceInWei Total amount paid for this trade
    /// @param tokenAddress Address of the listed token
    function _calculateRoyalties(
        uint256 tokenId,
        uint256 priceInWei,
        address tokenAddress
    )
        internal
        view
        returns (
            bool,
            address payable[] memory,
            uint256[] memory
        )
    {
        address royaltyLookUp = royaltyRegistry.getRoyaltyLookupAddress(tokenAddress);

        address payable[] memory recipients;
        uint256[] memory amounts;

        bool success = false;

        if (IRoyaltyEngineV1(royaltyLookUp).supportsInterface(_INTERFACE_ID_ROYALTYENGINEV1) == true) {
            (recipients, amounts) = IRoyaltyEngineV1(royaltyLookUp).getRoyaltyView(tokenAddress, tokenId, priceInWei);

            success = true;
        } else if (IRoyaltyEngineV1(royaltyLookUp).supportsInterface(_INTERFACE_ID_ERC2981) == true) {
            (address receiver, uint256 amount) = IERC2981Royalties(royaltyLookUp).royaltyInfo(tokenId, priceInWei);

            recipients = new address payable[](1);
            recipients[0] = payable(receiver);

            amounts = new uint256[](1);
            amounts[0] = amount;

            success = true;
        }

        return (success, recipients, amounts);
    }

    /// @notice Verifies that the access to a listing is valid
    /// @param listingId Id of the listing that should be verified
    /// @param verifyOwnership Boolean switch to verifiy listing ownership as well
    function _verifyListingAccess(uint256 listingId, bool verifyOwnership) internal view returns (Listing storage) {
        Listing storage listing = listings[listingId];
        address sender = _msgSender();

        if (!activeListings[listing.tokenAddress][listing.tokenId] || listings[listingId].tokenAddress == address(0)) {
            revert InvalidListing(listingId);
        }

        if (verifyOwnership && listing.seller != sender) {
            revert NotAllowed(listingId, sender);
        }

        return listing;
    }

    function _setPaymentToken(address _token, bool _approval) internal {
        acceptedTokenMap[_token] = _approval;
    }

    function _setPublicationFee(uint256 _publicationFee) internal {
        publicationFeeInWei = _publicationFee;
    }

    function _setMarketplaceFee(uint256 _marketplaceFee) internal {
        marketplaceFee = _marketplaceFee;
    }

    function _setFeeReceiver(address _feeReceiver) internal {
        feeReceiver = _feeReceiver;
    }

    function _setRoyaltyRegistry(address _royaltyRegistry) internal {
        royaltyRegistry = IRoyaltyRegistry(_royaltyRegistry);
    }

    function _setReferralReward(uint256 newReward) internal {
        referralReward = newReward;
    }
}

