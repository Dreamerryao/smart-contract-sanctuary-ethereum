contract LitedexFoundation is Ownable{
    using SafeBEP20 for IBEP20;
    using SafeMath for uint256;
    
    //token
    IBEP20 public lockToken;

    //time
    uint256 private startTime;
    uint256 private endTime;
    bool private superb;

    //token info
    uint256 private totalLocked;
    uint256 private tokenIn;
    uint256 private tokenOut;
    string private treasuryName = "Foundation";
    uint private maxRedeem = 100;
    
    modifier isClaimable{
        require(!isLocked(), "Litedex: This Treasury is Locked!");
        _;
    }
    modifier isSuperOn {
        require(superb, "Litedex: super function is closed");
        _;
    }

    event SetMax(uint256 previousMax, uint256 lastestMax);
    event SetTime(uint256 start, uint256 end);
    event SetTreasuryName(string indexed previousName, string indexed lastestName);
    event Lock(uint256 total, uint256 time);
    event Distribute(address destination, uint256 total, uint256 time, string indexed note);
    
    constructor(address _lockToken, uint256 _lockStart, uint256 _lockEnd) public {
        lockToken = IBEP20(_lockToken);
        startTime = _lockStart;
        endTime = _lockEnd;
    }
    function getSuperStatus() external view returns(bool){
        return superb;
    }

    function setSuperStatus(bool _status) external onlyOwner {
        require(superb != _status, "Litedex: set different status");
        superb = _status;
    }

    function setMaxRedeem(uint _max) external onlyOwner {
        require(_max > 0 && _max <= 100,"Litedex: max is zero");

        emit SetMax(maxRedeem, _max);
        maxRedeem = _max;
    }

    function setTime(uint256 _start, uint256 _end) external onlyOwner {
        require(!isLocked(), "Litedex: contract is running");
        require(_start > 0 && _end > 0, "Litedex: time is zero");

        emit SetTime(_start, _end);
        startTime = _start;
        endTime = _end;
    }

    function relock(uint256 _extendTime) external onlyOwner isSuperOn{
        require(isLocked(), "Litedex: contract is not running");
        require(_extendTime > 0, "Litedex: time is zero");
        endTime = endTime.add(_extendTime);
    }

    function setTreasuryName(string memory _name) external onlyOwner isSuperOn{

        emit SetTreasuryName(treasuryName, _name);
        treasuryName = _name;
    }

    function emergencyUnlocked() external onlyOwner isSuperOn{
        require(isLocked(), "Litedex: contract is not running");
        
        emit SetTime(0, 0);
        startTime = 0;
        endTime = 0;
    }

    function getTreasuryName() external view returns(string memory){
        return treasuryName;
    }

    function getTokenIn() external view returns(uint256){
        return tokenIn;
    }

    function getTokenOut() external view returns(uint256){
        return tokenOut;
    }

    function getTotalTokenLocked() external view returns(uint256){
        return totalLocked;
    }

    function getBlockTimestamp() internal view returns(uint256){
        return block.timestamp;
    }
    function getUnlockedTime() external view returns(uint256){
        return endTime;
    }

    function isLocked() public view returns(bool){
        return (getBlockTimestamp() >= startTime) ? (getBlockTimestamp() <= endTime) ? true : false : false ;
    }

    function lock(uint256 _totalLock) external onlyOwner{
        require(_totalLock > 0, "Litedex: _totalLock zero");

        lockToken.safeTransferFrom(msg.sender, address(this), _totalLock);
        totalLocked = totalLocked.add(_totalLock);
        tokenIn  = tokenIn.add(_totalLock);
        emit Lock(_totalLock, block.timestamp);
    }

    function distribute(uint256 _totalRedeem, address _to, string calldata _note) external onlyOwner isClaimable {
        require(_totalRedeem > 0, "Litedex: _totalRedeem is 0");
        require(_to != address(0), "Litedex: _to is zero address");

        if(_totalRedeem > totalLocked.mul(maxRedeem).div(100)){
            _totalRedeem = totalLocked.mul(maxRedeem).div(100);
        }
        tokenIn = tokenIn.sub(_totalRedeem);
        tokenOut = tokenOut.add(_totalRedeem);

        lockToken.safeTransfer(_to, _totalRedeem);

        emit Distribute(_to, _totalRedeem, block.timestamp, _note);
    }
}