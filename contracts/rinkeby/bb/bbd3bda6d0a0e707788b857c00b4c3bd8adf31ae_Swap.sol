import { ERC20 } from "solmate/tokens/ERC20.sol";
import { IStargateRouter } from "./interfaces/IStargateRouter.sol";
import { IStargateReceiver } from "./interfaces/IStargateReceiver.sol";
import { IUniswapV2Router02 } from "v2-periphery/interfaces/IUniswapV2Router02.sol";

contract Swap is IStargateReceiver {

    /*//////////////////////////////////////////////////////////////
                                 EVENTS
    //////////////////////////////////////////////////////////////*/

    event ReceivedOnDestination(address token, uint amountLD);
    event Swapped(
        address _swapToken, 
        address bridgeTokenAddress, 
        uint256 _qty, 
        uint256 bridgeAmount
    );

    /*//////////////////////////////////////////////////////////////
                                  STATE
    //////////////////////////////////////////////////////////////*/

    address public stargateRouterAddress;
    address public uniswapRouterAddress;
    address public bridgeTokenAddress;

    /*//////////////////////////////////////////////////////////////
                               CONSTRUCTOR
    //////////////////////////////////////////////////////////////*/ 

    constructor(address _stargateRouter, address _uniswapRouter, address _bridgeToken) {
        stargateRouterAddress = _stargateRouter;
        uniswapRouterAddress = _uniswapRouter;
        bridgeTokenAddress = _bridgeToken;
    }

    /*//////////////////////////////////////////////////////////////
                                 SETTERS
    //////////////////////////////////////////////////////////////*/

    function setStargateRouter(address _router) external {
        stargateRouterAddress = _router;
    }

    function setUniswapRouter(address _router) external {
        uniswapRouterAddress = _router;
    }

    function setBridgeToken(address _token) external {
        bridgeTokenAddress = _token;
    }

    /*//////////////////////////////////////////////////////////////
                             EXTERNAL LOGIC
    //////////////////////////////////////////////////////////////*/

    /// @param _qty The qty of local _token contract tokens  
    /// @param _swapToken The token user will swap into bridge token 
    /// @param _dstChainId The destination chain id
    /// @param _srcPoolId The source Stargate poolId
    /// @param _dstPoolId The destination Stargate poolId
    /// @param _to The bytes containing the toAddress
    /// @param _destStargateComposed The destination chain receiving contract address
    function swap(
        uint256 _qty,
        address _swapToken,                    
        uint16 _dstChainId,                      
        uint16 _srcPoolId,                       
        uint16 _dstPoolId,                       
        address _to,                             
        address _destStargateComposed            
    ) external payable {
        require(msg.value > 0, "gas for crosschain message");
        require(_qty > 0, "error: swap() requires qty > 0");
        require(ERC20(_swapToken).allowance(msg.sender, address(this)) >= _qty, "contract not approved");

        // encode payload data to send to destination contract, which it will handle with sgReceive()
        bytes memory data = abi.encode(_to);

        // transfer swapToken to this contract
        ERC20(_swapToken).transferFrom(msg.sender, address(this), _qty);
        uint256 bridgeAmount = _qty;

        if (_swapToken != bridgeTokenAddress) {
            // approve uniswap router to withdraw bridgeToken
            ERC20(_swapToken).approve(uniswapRouterAddress, _qty); 

            address[] memory path = new address[](2);
            path[0] = _swapToken;
            path[1] = bridgeTokenAddress;

            //deadline change necessary?
            uint[] memory amounts = IUniswapV2Router02(uniswapRouterAddress).swapExactTokensForTokens(
                _qty, 
                0, 
                path, 
                address(this), 
                block.timestamp
            );

            bridgeAmount = amounts[1];
            require(bridgeAmount > 0, "ammRouter gave us 0 tokens to swap()");

            emit Swapped(_swapToken, bridgeTokenAddress, _qty, bridgeAmount);
        }

        // this contract needs to approve the stargateRouter to spend its path[1] token!
        ERC20(bridgeTokenAddress).approve(address(stargateRouterAddress), bridgeAmount);

        // Stargate's Router.swap() function sends the tokens to the destination chain.
        IStargateRouter(stargateRouterAddress).swap{value:msg.value}(
            _dstChainId,                                    // the destination chain id
            _srcPoolId,                                     // the source Stargate poolId
            _dstPoolId,                                     // the destination Stargate poolId
            payable(msg.sender),                            // refund adddress. if msg.sender pays too much gas, return extra eth
            bridgeAmount,                                   // total tokens to send to destination chain
            0,                                              // min amount allowed out
            IStargateRouter.lzTxObj(200000, 0, "0x"),       // default lzTxObj
            abi.encodePacked(_destStargateComposed),        // destination address, the sgReceive() implementer
            data                                            // bytes payload
        );
    }

    /// @param _chainId The remote chainId sending the tokens
    /// @param _srcAddress The remote Bridge address
    /// @param _nonce The message ordering nonce
    /// @param _token The token contract on the local chain
    /// @param amountLD The qty of local _token contract tokens  
    /// @param _payload The bytes containing the toAddress
    function sgReceive(
        uint16 _chainId, 
        bytes memory _srcAddress, 
        uint _nonce, 
        address _token, 
        uint amountLD, 
        bytes memory _payload
    ) override external {
        require(
            msg.sender == address(stargateRouterAddress), 
            "only stargate router can call sgReceive!"
        );

        (address _toAddr) = abi.decode(_payload, (address));
        ERC20(_token).transfer(_toAddr, amountLD);
        emit ReceivedOnDestination(_token, amountLD);
    }
}

