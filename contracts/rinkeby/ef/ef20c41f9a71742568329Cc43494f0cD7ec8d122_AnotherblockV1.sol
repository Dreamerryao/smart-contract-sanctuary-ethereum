import '@openzeppelin/contracts/token/ERC1155/ERC1155.sol';
import '@openzeppelin/contracts/access/AccessControl.sol';

contract DropV1 is ERC1155, AccessControl {
    // Role used for minting
    bytes32 public constant MINTER_ROLE = keccak256('MINTER_ROLE');

    // NOTE : is it more interesting to pass the listingId as Key instead of the token Id ?
    // CHECK GAS
    // Stores the royalty share for a given Token ID
    mapping(uint256 => uint256) public sharesPerToken;

    // Stores the listing ID for a given Token ID
    mapping(uint256 => uint256) public listingIdPerToken;

    constructor() ERC1155('') {
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
    }

    /**
     * Mint _amount tokens of _tokenID to _owner address
     *
     * @param _tokenId : ID of the token to be minted
     * @param _amount : amount of token to be minted
     * @param _shares : royalty per token
     * @param _listingId : associated listing ID
     * @param _owner : address to which the token(s) is/are transferred
     **/
    function mint(
        uint256 _tokenId,
        uint256 _amount,
        uint256 _shares,
        uint256 _listingId,
        address _owner
    ) external onlyRole(MINTER_ROLE) {
        if (sharesPerToken[_tokenId] == 0) {
            listingIdPerToken[_tokenId] = _listingId;
            sharesPerToken[_tokenId] = _shares;
        }
        _mint(_owner, _tokenId, _amount, '');
    }

    /**
     * Mint _amounts tokens accross distinct _tokenIDs to _owner address
     *
     * @param _tokenIds : array of IDs of the tokens to be minted
     * @param _amounts : amounts of tokens to be minted per token IDs
     * @param _shares : royalty per token
     * @param _listingId : associated listing ID
     * @param _owner : address to which the tokens are transferred
     **/
    function mintBatch(
        uint256[] memory _tokenIds,
        uint256[] memory _amounts,
        uint256 _shares,
        uint256 _listingId,
        address _owner
    ) external onlyRole(MINTER_ROLE) {
        uint256 tokenId;
        for (uint256 i = 0; i < _tokenIds.length; i++) {
            tokenId = _tokenIds[i];
            if (sharesPerToken[tokenId] == 0) {
                listingIdPerToken[tokenId] = _listingId;
                sharesPerToken[tokenId] = _shares;
            }
        }
        _mintBatch(_owner, _tokenIds, _amounts, '');
    }

    /**
     * Update the URI
     *
     * @param _newUri : new URI
     */
    function setURI(string memory _newUri)
        external
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        _setURI(_newUri);
    }

    function supportsInterface(bytes4 interfaceId)
        public
        view
        override(ERC1155, AccessControl)
        returns (bool)
    {
        return super.supportsInterface(interfaceId);
    }
}

