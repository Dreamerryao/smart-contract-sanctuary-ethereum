pragma solidity ^0.8.4;

import './DropV1.sol';
import '@openzeppelin/contracts/access/Ownable.sol';
import {MerkleProof} from '@openzeppelin/contracts/utils/cryptography/MerkleProof.sol';

contract AnotherblockV1 is Ownable {
    // Address of the NFT contract
    address private nft;

    // Address of anotherblock multisig
    address private treasury;

    // Index tracking the NFT Token ID
    uint256 private startTokenIndex = 0;

    // Listing count since genesis
    uint256 private totalListing = 0;

    // Denominator used to calculate fees (basis points)
    uint256 public constant DENOMINATOR = 10000;

    // Array of existing Listings
    Listing[] public listings;

    // NOTE : Check memory usage over time
    // Stores the amount of tokens minted per address and per listing
    mapping(uint256 => mapping(address => uint256)) mintedPerListing;

    // Error returned if the listing is sold-out
    error ListingSoldOut();

    // Error returned if non-whitelisted user attempts to mint prior to public sale
    error NotInMerkle();

    // Error returned if `supply` is not a multiple of `tokenCount`
    error SupplyToTokenCountRatio();

    // Error returned if `royaltySharePerToken` is smaller or equal to 0
    error InsufficientRoyalties();

    // Error returned if `maxAmountPerAddress` is smaller or equal to 0
    error InsufficientMaxAmountPerAddress();

    // Error returned if `supply` is smaller or equal to 0
    error InsufficientSupply();

    // Error returned if `owner` address is the zero address
    error OwnerIsZeroAddress();

    // Error returned if `price` is smaller or equal to 0
    error IncorrectMintPrice();

    // Error returned if user attempt to mint more than allowed by the listing
    error AskingTooMuch();

    // Error returned if the supply is sold out
    error NotEnoughTokensAvailable();

    // Error returned if user did not send the correct amount of ETH
    error IncorrectETHSent();

    // Error returned if the user already minted the maximum amount of token
    error AlreadyMintedMaximum();

    // Event emitted upon Listing creation
    event ListingCreated(
        uint256 listingId,
        uint256 price,
        uint256 tokenCount,
        uint256 supply,
        uint256 royaltyPerToken,
        uint256 rightHolderFee,
        address owner
    );

    /**
     * Listing Structure format
     *
     * @param listingId : listing unique identifier
     * @param price : initial price in ETH(?) of 1 token
     * @param tokenCount : number of different tokenId for this listing
     * @param supply : total number of tokens for this listing (accross all associated tokenId)
     * @param sold : total number of sold tokens for this listing (accross all associated tokenId)
     * @param royaltySharePerToken : total percentage of royalty evenly distributed among tokens holders
     * @param rightHolderFee : right Holder fee on each mint expressed in basis point
     * @param firstTokenIndex : TokenId at which this listing starts
     * @param maxAmountPerAddress : Maximum number of token to be minted per address
     * @param publicSaleTime : Timestamp at which the public sale is opened (in seconds)
     * @param owner : right holder address
     * @param merkleRoot : merkle tree root used for whitelist
     */
    struct Listing {
        uint256 listingId;
        uint256 price;
        uint256 tokenCount;
        uint256 supply;
        uint256 sold;
        uint256 royaltySharePerToken;
        uint256 rightHolderFee;
        uint256 firstTokenIndex;
        uint256 maxAmountPerAddress;
        uint256 publicSaleTime;
        address owner;
        bytes32 merkleRoot;
    }

    /**
     * Contract constructor
     *
     * @param _nft : Drop contract (ERC1155) address
     */
    constructor(address _nft) {
        nft = _nft;
        treasury = msg.sender;
    }

    /**
     * Create a Listing
     *
     * @param _owner : right holder address
     * @param _price : initial price in ETH(?) of 1 NFT
     * @param _tokenCount : number of different tokenId for this listing
     * @param _supply : total number of NFT for this listing (accross all associated tokenId)
     * @param _royaltySharePerToken : total percentage of royalty evenly distributed among NFT holders
     * @param _rightHolderFee : right Holder fee on each mint expressed in basis point
     * @param _maxAmountPerAddress : Maximum number of token to be minted per address
     * @param _publicSaleTime : Timestamp at which the public sale is opened (in seconds)
     * @param _merkle : merkle tree root used for whitelist
     */
    function create(
        address _owner,
        uint256 _price,
        uint256 _tokenCount,
        uint256 _supply,
        uint256 _royaltySharePerToken,
        uint256 _rightHolderFee,
        uint256 _maxAmountPerAddress,
        uint256 _publicSaleTime,
        bytes32 _merkle
    ) external onlyOwner {
        // Ensure all the Token Ids will have the same number of Tokens
        if (_supply % _tokenCount != 0) revert SupplyToTokenCountRatio();

        // Enfore non-null royalty shares for this listing
        if (_royaltySharePerToken <= 0) revert InsufficientRoyalties();

        // Enfore non-null maximum amount per address
        if (_maxAmountPerAddress <= 0) revert InsufficientMaxAmountPerAddress();

        // Ensure supply non-null
        if (_supply <= 0) revert InsufficientSupply();

        // Ensure right holder address is not the zero address
        if (_owner == address(0)) revert OwnerIsZeroAddress();

        // Ensure non-null price
        if (_price <= 0) revert IncorrectMintPrice();

        _createListing(
            _owner,
            _price,
            _tokenCount,
            _supply,
            _royaltySharePerToken,
            _rightHolderFee,
            _maxAmountPerAddress,
            _publicSaleTime,
            _merkle
        );
    }

    /**
     * Let a whitelisted user mint `_quantity` token(s) of the given `_listingId`
     *
     * @param _listingId : listing identifier
     * @param _quantity : amount of tokens to be minted
     * @param _proof : merkle tree proof used to verify whitelisted user
     */
    function mint(
        uint256 _listingId,
        uint256 _quantity,
        bytes32[] calldata _proof
    ) public payable {
        Listing storage listing = listings[_listingId];

        // Check if the listing exists
        //(when listing is deleted, the owner address is the zero address)
        if (listing.owner == address(0)) revert ListingSoldOut();

        // Check that user did not mint the maximum amount per address
        if (
            mintedPerListing[listing.listingId][msg.sender] + _quantity >
            listing.maxAmountPerAddress
        ) revert AlreadyMintedMaximum();

        // Check that user is not asking for more tokens than allowed
        if (_quantity > listing.maxAmountPerAddress) revert AskingTooMuch();

        // Check that there are enough tokens available for sale
        if (listing.sold + _quantity > listing.supply)
            revert NotEnoughTokensAvailable();

        // Check that user is sending the correct amount of ETH (will revert if user send too much or not enough)
        if (msg.value != listing.price * _quantity) revert IncorrectETHSent();

        // Check that user is whitelisted in case the public sale did not start yet
        if (listing.merkleRoot != 0x0 && block.timestamp < listing.publicSaleTime) {
            bool isWhitelisted = MerkleProof.verify(
                _proof,
                listing.merkleRoot,
                keccak256(abi.encodePacked(msg.sender))
            );

            // Revert if user is not whitelisted
            if (!isWhitelisted) {
                revert NotInMerkle();
            }
        }

        // Send Right Holder Fee to the owner address
        uint256 rightHolderFee = (msg.value * listing.rightHolderFee) /
            DENOMINATOR;
        payable(listing.owner).transfer(rightHolderFee);

        // Send the rest to Anotherblock treasury address
        if (rightHolderFee < msg.value) {
            payable(treasury).transfer(msg.value - rightHolderFee);
        }

        uint256 tokenCount = listing.tokenCount;
        uint256 firstTokenIndex = listing.firstTokenIndex;
        uint256 sold = listing.sold;

        // If the tokenCount is 1, directly mint _quantity token to the user address
        if (tokenCount == 1) {
            DropV1(nft).mint(
                firstTokenIndex,
                _quantity,
                listing.royaltySharePerToken,
                listing.listingId,
                msg.sender
            );
        }
        // Else, if the quantity is greater than 1, calculate the amount to be minted for each tokenID
        else if (_quantity > 1) {
            uint256[] memory tokenIds = new uint256[](tokenCount);
            uint256[] memory amounts = new uint256[](tokenCount);

            for (uint256 i = 0; i < _quantity; i++) {
                tokenIds[i % tokenCount] =
                    ((sold + i) % tokenCount) +
                    firstTokenIndex;
                amounts[i % tokenCount] += 1;
            }
            DropV1(nft).mintBatch(
                tokenIds,
                amounts,
                listing.royaltySharePerToken,
                listing.listingId,
                msg.sender
            );
        }
        // Else, mint 1 token of next available tokenID to the user address
        else {
            uint256 tokenId = (sold % tokenCount) + firstTokenIndex;
            DropV1(nft).mint(
                tokenId,
                _quantity,
                listing.royaltySharePerToken,
                listing.listingId,
                msg.sender
            );
        }

        // Increment `sold` counter
        listing.sold += _quantity;

        // Increment user amount minted
        mintedPerListing[listing.listingId][msg.sender] += _quantity;

        // Remove the listing element from listings array after the last token has been minted.
        if (listing.sold == listing.supply) {
            delete listings[_listingId];
        }
    }

    /**
     * Update Drop contract (ERC1155) address to _nft
     *
     * @param _nft : new Drop contract (ERC1155) address
     */
    function setNFTAddress(address _nft) external onlyOwner {
        nft = _nft;
    }

    /**
     * Return the listing parameters for the given _listingId
     *
     * @param _listingId : listing identifier
     * @return price : initial price in ETH(?) of 1 token
     * @return tokenCount : number of different tokenId for this listing
     * @return supply : total number of tokens for this listing (accross all associated tokenId)
     * @return sold : total number of sold tokens for this listing (accross all associated tokenId)
     * @return royaltySharePerToken : total percentage of royalty evenly distributed among tokens holders
     * @return rightHolderFee : right Holder fee on each mint expressed in basis point
     * @return firstTokenIndex : TokenId at which this listing starts
     * @return maxAmountPerAddress : Maximum number of token to be minted per address
     * @return publicSaleTime : Timestamp at which the public sale is opened (in seconds)
     * @return owner : right holder address
     */
    function getListingDetails(uint256 _listingId)
        public
        view
        returns (
            uint256 price,
            uint256 tokenCount,
            uint256 supply,
            uint256 sold,
            uint256 royaltySharePerToken,
            uint256 rightHolderFee,
            uint256 firstTokenIndex,
            uint256 maxAmountPerAddress,
            uint256 publicSaleTime,
            address owner
        )
    {
        Listing storage listing = listings[_listingId];
        return (
            listing.price,
            listing.tokenCount,
            listing.supply,
            listing.sold,
            listing.royaltySharePerToken,
            listing.rightHolderFee,
            listing.firstTokenIndex,
            listing.maxAmountPerAddress,
            listing.publicSaleTime,
            listing.owner
        );
    }

    /**
     * Register the Drop information in Listing Struct
     *
     * @param _owner : right holder address
     * @param _price : initial price in ETH(?) of 1 NFT
     * @param _tokenCount : number of different tokenId for this listing
     * @param _supply : total number of NFT for this listing (accross all associated tokenId)
     * @param _royaltySharePerToken : total percentage of royalty evenly distributed among NFT holders
     * @param _rightHolderFee : right Holder fee on each mint expressed in basis point
     * @param _maxAmountPerAddress : Maximum number of token to be minted per address
     * @param _publicSaleTime : Timestamp at which the public sale is opened (in seconds)
     * @param _merkle : merkle tree root used for whitelist
     */
    function _createListing(
        address _owner,
        uint256 _price,
        uint256 _tokenCount,
        uint256 _supply,
        uint256 _royaltySharePerToken,
        uint256 _rightHolderFee,
        uint256 _maxAmountPerAddress,
        uint256 _publicSaleTime,
        bytes32 _merkle
    ) internal {
        listings.push(
            Listing(
                totalListing,
                _price,
                _tokenCount,
                _supply,
                0,
                _royaltySharePerToken,
                _rightHolderFee,
                startTokenIndex,
                _maxAmountPerAddress,
                _publicSaleTime,
                _owner,
                _merkle
            )
        );

        emit ListingCreated(
            totalListing,
            _price,
            _tokenCount,
            _supply,
            _royaltySharePerToken,
            _rightHolderFee,
            _owner
        );

        // Increment the startTokenIndex state
        startTokenIndex += _tokenCount;

        // Increment the total listing count
        totalListing++;
    }
}

