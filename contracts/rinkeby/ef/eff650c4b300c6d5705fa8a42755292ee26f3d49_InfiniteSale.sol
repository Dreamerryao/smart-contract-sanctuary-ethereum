contract InfiniteSale is Ownable, Pausable {
    using Address for address payable;
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    event RateChanged(uint256 oldRate, uint256 newRate);
    event TokensPurchased(
        address indexed buyer,
        address indexed beneficiary,
        uint256 amount
    );

    event Revoked(address indexed beneficiary, uint256 timestamp);

    IERC20 public immutable token;
    address payable public immutable wallet;
    uint256 public rate;

    constructor(
        address payable wallet_,
        address token_,
        uint256 rate_
    ) {
        wallet = wallet_;
        token = IERC20(token_);
        rate = rate_;
    }

    function stock() public view returns (uint256) {
        return token.balanceOf(address(this));
    }

    function revoke() external onlyOwner whenPaused {
        token.safeTransfer(wallet, stock());
    }

    function setRate(uint256 rate_) external onlyOwner whenPaused {
        emit RateChanged(rate, rate_);
        rate = rate_;
    }

    function pause() external onlyOwner whenNotPaused {
        _pause();
    }

    function unpause() external onlyOwner whenPaused {
        _unpause();
    }

    function buy() external payable whenNotPaused {
        require(stock() > 0, "No stock");
        uint256 amount = msg.value;
        uint256 transferAmount = amount.mul(rate);
        require(stock() >= transferAmount, "Transfer amount is too big");
        IERC20(token).safeTransfer(msg.sender, transferAmount);
        wallet.sendValue(msg.value);
        emit TokensPurchased(msg.sender, wallet, transferAmount);
    }
}