pragma solidity ^0.8.0;

contract AccessControl {

    modifier onlyRole(bytes32 _role){
        require(roles[_role][msg.sender], "account not authorized for this call");
        _;
    }

    event GrantRole(bytes32 indexed role, address indexed account);
    event RevokeRole(bytes32 indexed role, address indexed account);
    mapping(bytes32 => mapping(address => bool)) public roles;

    //0x5ff1fb0ce9089603e6e193667ed17164e0360a6148f4a39fc194055588948a31
    bytes32 public constant APPROVER = keccak256(abi.encodePacked("APPROVER"));

    //0xaf290d8680820aad922855f39b306097b20e28774d6c1ad35a20325630c3a02c
    bytes32 public constant MANAGER = keccak256(abi.encodePacked("MANAGER"));

    //0xa0bb1af1c90aa52ed052b92714ff0087008cc720049bf1af77cca2600b31e80c
    bytes32 public constant CONTRIBUTOR = keccak256(abi.encodePacked("CONTRIBUTOR"));

    constructor(){
        _grantRole(APPROVER, msg.sender);
    }
    
    function _grantRole(bytes32 _role, address _account) internal {
        roles[_role][_account] = true;
        emit GrantRole(_role, _account);
    }

    function grantRole(bytes32 _role, address _account) external onlyRole(APPROVER) {
        _grantRole(_role, _account);
    }

    function checkRole(bool flag) public onlyRole(MANAGER) view returns(bool){
        return flag;
    }

}

