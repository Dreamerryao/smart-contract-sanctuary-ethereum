import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/Strings.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "AccessControl.sol";

contract DAOEarn is ERC20, Ownable, AccessControl {
    using Counters for Counters.Counter;
    
    struct task {
        uint256 id;
        address contributor;
        string taskName;
        uint256 totalReward;
        uint256 usdcPercent;
        string taskStatus;
        bool isRewarded;
    }
    
    uint256[] public taskId;
    mapping(uint256 => task) tasks;
    
    /// @dev Enable Transfer Flag
    bool private isTransferEnable = false;
    
    /// @dev Task Id Counter
    Counters.Counter public taskCounter;

    /// @dev USDC Token Address
    address private usdcAddress = 0xDe4d85363ecbfc51AB104Df3cf7D5D03c2169b08;
    

    /*-----------Modifiers-----------*/
    modifier isTransferable() {
		require(isTransferEnable, "Token transfers are restricted");
		_;
	}


    /*-----------Events-----------*/
    event CreateTask(uint256 indexed id, address indexed contributor, string taskName, uint256 totalReward, uint256 usdcPercent, string indexed taskStatus);
    event RewardContributor(uint256 indexed id, address indexed contributor, string taskName, bool isRewarded);


    /*-----------Errors-----------*/
    error CheckError(string error);
    error InsufficientTokenBal(string error);


    /// @dev Set name and symbol of the token
    constructor(string memory name, string memory symbol) public ERC20(name, symbol){}
    
    /// @dev Create Task and assign to Contributor. Restricted to Managers.
    function createTask(
        address contributor, 
        string memory taskName, 
        uint256 totalReward, 
        uint256 usdcPercent, 
        string memory taskStatus) 
        public 
        onlyRole(MANAGER) 
        {
        
        /// @dev Check if USDC percentage is less than or equal to 100%
        require(usdcPercent < 101, "USDC reward percentage should be 100% or lesser");
        
        uint256 id = taskCounter.current();

        task storage newTask = tasks[id];
        
        newTask.id = id;
        newTask.contributor = contributor;
        newTask.taskName = taskName;
        newTask.totalReward = totalReward;
        newTask.usdcPercent = usdcPercent;
        newTask.taskStatus = taskStatus;
        newTask.isRewarded = false;

        taskId.push(id);

        taskCounter.increment();

        emit CreateTask(id, contributor, taskName, totalReward, usdcPercent, taskStatus);

    }

    /// @dev Return task details mapped to task id.
    function getTask(uint256 id) 
        public
        view 
        returns 
        (uint256 tId, 
        address contributor, 
        string memory taskName, 
        uint256 totalReward, 
        uint256 usdcPercent, 
        string memory taskStatus, 
        bool isRewarded)
    {
        task storage t = tasks[id];
        return(t.id, t.contributor, t.taskName, t.totalReward, t.usdcPercent, t.taskStatus, t.isRewarded);
    }

    /// @dev Calculate reward and send the reward to Contributor. Restricted to Managers.
    function rewardContributor(uint256 id) external onlyRole(MANAGER) {
        task storage t = tasks[id];
        IERC20 tokenContract = IERC20(usdcAddress);

        /// @dev Check if task rewarded already
        if(!t.isRewarded){
            revert InsufficientTokenBal("This task has been already rewarded!");
        }
        
        /// @dev Calculate USDC and DAOEarn reward
        uint256 usdcReward = t.totalReward * t.usdcPercent / 100;
        uint256 daoEarnReward = t.totalReward - usdcReward;
        
        /// @dev Check USDC balance of the contract
        if(usdcReward < tokenContract.balanceOf(address(this))){
            revert InsufficientTokenBal("Insufficient USDC balance to reward Contributor.");
        }

        tasks[id].taskStatus = "Completed";
        tasks[id].isRewarded = true;
        
        /// @dev Mint respective DAOEarn tokens to Contributor
        _mint(t.contributor, daoEarnReward);

        /// @dev Transfer respective USDC tokens to Contributor
        tokenContract.transfer(t.contributor, usdcReward);

        emit RewardContributor(t.id, t.contributor, t.taskName, t.isRewarded);
    }

    /// @dev Function to calculate and check reward of a particular task
    function calcReward(uint256 id) public view returns (string memory){

        task storage t = tasks[id];
        
        uint256 usdcReward = t.totalReward * t.usdcPercent / 100;
        uint256 daoEarnReward = t.totalReward - usdcReward;
        string memory returnString = string(abi.encodePacked("USDC Reward - ", Strings.toString(usdcReward), " | NFTY20 Reward - ", Strings.toString(daoEarnReward)));
        
        return(returnString);
    }

    /// @dev Enable or Disable token transfers. Restricted to Approvers
    function switchTransfer(bool isTransfer) external onlyRole(APPROVER){
        isTransferEnable = isTransfer;
    }

    /// @dev Check if transfer enabled is true or false
    function isTransferEnabled() public view returns(bool){

        if(!isTransferEnable){
            revert CheckError("Transfer Restricted");
        }
        return isTransferEnable;
    }

    //-------------Restrict Transfer and TransferFrom-------------//

    /// @dev Transfer function overridden to restrict transfers
    function transfer(address to, uint256 amount) public isTransferable virtual override returns (bool success) {
        address owner = _msgSender();
        _transfer(owner, to, amount);
        return true;
    }

    /// @dev Transfer From function overridden to restrict transfers
    function transferFrom(address from, address to, uint256 amount) public isTransferable virtual override returns (bool) {
        address spender = _msgSender();
        _spendAllowance(from, spender, amount);
        _transfer(from, to, amount);
        return true;
    }
}

