pragma solidity ^0.8.9;

import { IERC721Upgradeable } from "@openzeppelin/contracts-upgradeable/interfaces/IERC721Upgradeable.sol";
import { ECDSAUpgradeable } from "@openzeppelin/contracts-upgradeable/utils/cryptography/ECDSAUpgradeable.sol";
import { ERC165CheckerUpgradeable } from "@openzeppelin/contracts-upgradeable/utils/introspection/ERC165CheckerUpgradeable.sol";
import { AddressUpgradeable } from "@openzeppelin/contracts-upgradeable/utils/AddressUpgradeable.sol";
import { PausableUpgradeable } from "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import { OwnableUpgradeable } from "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import { ReentrancyGuardUpgradeable } from "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";
import { NonblockingLzAppUpgradeable } from "./layerzero/contracts-upgradeable/lzApp/NonblockingLzAppUpgradeable.sol";

import { IL1RoyaltyRegistry } from "./IL1RoyaltyRegistry.sol";
import { IL1CancellationRegistry } from "./IL1CancellationRegistry.sol";
import { IL1ERC721Bridge } from "./nft-bridge/L1/messaging/L1ERC721Bridge.sol";

contract L1BridgeExchange is PausableUpgradeable, ReentrancyGuardUpgradeable, NonblockingLzAppUpgradeable {
    event SellOrderFinalized(
        address indexed _seller,
        uint256 indexed _tokenId,
        address indexed _buyer,
        address _l1ERC721,
        address _l2ERC721,
        uint256 _price
    );

    event RefundInitiated(
        address indexed _seller,
        uint256 indexed _tokenId,
        address indexed _buyer,
        address _l1ERC721,
        address _l2ERC721,
        uint256 _price,
        bytes32 _signatureHash
    );

    uint16 constant LZ_OPT_MAINNET_CHAIN_ID = 10011;

    address public l1RoyaltyRegistry;
    address public l1CancellationRegistry;
    address public l1ERC721Bridge;
    address public l2BridgeExchange;

    function initialize(
        address _lzEndpoint,
        address _l1RoyaltyRegistry,
        address _l1CancellationRegistry,
        address _l1ERC721Bridge,
        address _l2BridgeExchange
    ) external initializer {
        __Pausable_init_unchained();
        __ReentrancyGuard_init_unchained();
        __NonblockingLzApp_init(_lzEndpoint);

        l1RoyaltyRegistry = _l1RoyaltyRegistry;
        l1CancellationRegistry = _l1CancellationRegistry;
        l1ERC721Bridge = _l1ERC721Bridge;
        l2BridgeExchange = _l2BridgeExchange;
    }

    function setL1RoyaltyRegistry(address _royaltyRegistry) external onlyOwner {
        l1RoyaltyRegistry = _royaltyRegistry;
    }

    function setL1CancellationRegistry(address _cancellationRegistry) external onlyOwner {
        l1CancellationRegistry = _cancellationRegistry;
    }

    function setL1ERC721Bridge(address _l1ERC721Bridge) external onlyOwner {
        l1ERC721Bridge = _l1ERC721Bridge;
    }

    function setL2BridgeExchange(address _l2Exchange) external onlyOwner {
        l2BridgeExchange = _l2Exchange;
    }

    /* Receives the cross-chain message and finalizes the sell order. */
    function _nonblockingLzReceive(
        uint16,
        bytes memory,
        uint64,
        bytes memory _payload
    ) internal override {
        // decode the variables in the payload
        (
            address seller,
            address l1ERC721,
            address l2ERC721,
            uint256 tokenId,
            uint256 price,
            uint256 createdAtBlockNumber,
            address buyer,
            uint256 payout,
            bytes32 signatureHash
        ) = abi.decode(_payload, (address, address, address, uint256, uint256, uint256, address, uint256, bytes32));

        require(
            // ERC-721 identifier
            ERC165CheckerUpgradeable.supportsInterface(l1ERC721, 0x80ac58cd),
            "L1BridgeExchange: L1 ERC721 must support the EIP-165 ERC721 interface."
        );
        
        require(
            IL1CancellationRegistry(l1CancellationRegistry).getCancelledOrderBlockNumber(seller, l1ERC721, tokenId) < createdAtBlockNumber,
            "L1BridgeExchange: Sell order has been cancelled."
        );

        // attempt to finalize sell order
        try this.finalizeSellOrder(
            seller,
            l1ERC721,
            l2ERC721,
            tokenId,
            price,
            buyer,
            payout
        ) {} catch {
            (uint estL1MessageFee, ) = lzEndpoint.estimateFees(
                LZ_OPT_MAINNET_CHAIN_ID,
                address(this),
                abi.encodePacked(signatureHash),
                false,
                ''
            );
            uint256 estL1MessageFeeWithMultiplier = 30 * estL1MessageFee / 100;
            require(address(this).balance >= estL1MessageFeeWithMultiplier, "L1BridgeExchange: Insufficient funds to initiate buyer refund.");

            IL1CancellationRegistry(l1CancellationRegistry).cancelOrder(
                seller,
                l1ERC721,
                tokenId
            );

            lzEndpoint.send{value: estL1MessageFeeWithMultiplier}(
                LZ_OPT_MAINNET_CHAIN_ID,
                abi.encodePacked(l2BridgeExchange),
                abi.encodePacked(signatureHash),
                payable(this), // refund address
                address(0x0),
                '' // adapter params
            );

            emit RefundInitiated(
                seller,
                tokenId,
                buyer,
                l1ERC721,
                l2ERC721,
                price,
                signatureHash
            );
        }
    }

    /*
    * @dev External trade function. This accepts the details of the sell order and signed sell
    * order (the signatureHash) as a meta-transaction.
    *
    * Emits a {SellOrderFinalized} event via `_finalizeSellOrder`.
    */
    function finalizeSellOrder(
        address _seller,
        address _l1ERC721,
        address _l2ERC721,
        uint256 _tokenId,
        uint256 _price,
        address _buyer,
        uint256 _payout
    ) external whenNotPaused nonReentrant {
        require(msg.sender == address(this), 'L1BridgeExchange: Caller must be L1 Exchange.');

        IL1CancellationRegistry(l1CancellationRegistry).cancelOrder(
            _seller,
            _l1ERC721,
            _tokenId
        );

        // Transfers NFT ownership from the seller to the L1 Exchange contract so that the
        // NFT can be transferred to the L1 Bridge.
        IERC721Upgradeable(_l1ERC721).transferFrom(_seller, address(this), _tokenId);

        // Approves the L1 ERC721 Bridge to operate the NFT.
        IERC721Upgradeable(_l1ERC721).approve(l1ERC721Bridge, _tokenId);

        // Deposits the NFT from the L1 Exchange contract into the L1 Bridge, which will
        // cause an NFT to be minted on L2 and sent to the buyer.
        IL1ERC721Bridge(l1ERC721Bridge).depositERC721To(
            _l1ERC721,
            _l2ERC721,
            _buyer,
            _tokenId,
            1200000,
            ''
        );

        uint256 royaltyPayoutRate = IL1RoyaltyRegistry(l1RoyaltyRegistry).payoutPerMille(_l1ERC721);
        uint256 royaltyPayout = (royaltyPayoutRate * _price) / 1000;
        uint256 sellerPayout = _payout - royaltyPayout;

        if (royaltyPayout > 0) {
            address royaltyRecipient = IL1RoyaltyRegistry(l1RoyaltyRegistry).royaltyRecipients(_l1ERC721);
            (bool paidRoyalty, ) = payable(royaltyRecipient).call{value: royaltyPayout}("");
            require(paidRoyalty, "L1BridgeExchange: Unable to pay royalty recipient.");
        }

        (bool paidSeller, ) = payable(_seller).call{value: sellerPayout}("");
        require(paidSeller, "L1BridgeExchange: Unable to pay seller.");

        emit SellOrderFinalized(
            _seller,
            _tokenId,
            _buyer,
            _l1ERC721,
            _l2ERC721,
            _price
        );
    }
    
    /*
    * @dev Pauses trading on the exchange. To be used for emergencies.
    */
    function pause() external onlyOwner {
        _pause();
    }

    /*
    * @dev Resumes trading on the exchange. To be used for emergencies.
    */
    function unpause() external onlyOwner {
        _unpause();
    }

    /*
    * Withdraw just in case Ether is accidentally sent to this contract.
    */
    function withdraw() external onlyOwner {
        uint balance = address(this).balance;
        payable(msg.sender).transfer(balance);
    }

    receive() external payable {}
}

