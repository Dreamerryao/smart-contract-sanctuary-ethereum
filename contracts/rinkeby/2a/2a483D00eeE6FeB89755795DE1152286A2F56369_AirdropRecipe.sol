import "IWETH9.sol";
import "IJellyFactory.sol";
import "IJellyContract.sol";
import "IJellyAccessControls.sol";
import "SafeERC20.sol";
import "SafeMath.sol";
import "JellyAccessControls.sol";

contract AirdropRecipe {

    using SafeMath for uint256;
    using SafeERC20 for OZIERC20;

    IWETH public weth;
    IJellyFactory public jellyFactory;
    uint256 public feePercentage; 
    address jellyVault;


    /// @notice Jelly template id for the pool factory.
    uint256 public constant TEMPLATE_TYPE = 4;
    bytes32 public constant TEMPLATE_ID = keccak256("AIRDROP_RECIPE");

    bytes32 public constant AIRDROP_ID = keccak256("JELLY_DROP");
    bytes32 public constant LIST_ID = keccak256("MERKLE_LIST");
    bytes32 public constant ACCESS_ID = keccak256("ACCESS_CONTROLS");

    event AirdropDeployed(address airdrop, address token, uint256 tokenAmount);


    /** 
     * @notice Jelly Airdrop Recipe
     * @param _weth - Wrapped Ethers contract address
     * @param _jellyFactory - A factory that makes fresh Jelly
    "*/
    constructor(
        address _weth,
        address _jellyFactory,
        address _jellyVault,
        uint256 _feePercentage
    ) {
        require(_feePercentage < 1000, "Fee percentage too high");
        weth = IWETH(_weth);
        jellyFactory = IJellyFactory(_jellyFactory);
        jellyVault = _jellyVault;
        feePercentage = _feePercentage;
    }

    // PW: Set fees etc

    /** 
     * @dev prepare Jelly recipe
     *   
    */
    function prepareJellyDrop(
        address _admin,
        address _token,
        uint256 _tokenAmount,
        bytes32 _merkleRoot,
        string memory _merkleURI,
        address payable _integratorFeeAccount
    )
        external payable
    {
        require(_admin != address(0), "Admin address not set");
        require(_token != address(0), "Token address not set");
        require(_tokenAmount > 0, "Reward amount cannot be zero");

        address access_controls = jellyFactory.deployContract(
            ACCESS_ID,
            _integratorFeeAccount, 
            "");
        IJellyAccessControls(access_controls).initAccessControls(_admin);

        address list = jellyFactory.deployContract(
            LIST_ID,
            _integratorFeeAccount, 
            "");
        bytes memory listData = abi.encode(access_controls, _merkleRoot, _merkleURI);
        IJellyContract(list).initContract(listData); 

        uint256 jellyFee = _tokenAmount * uint256(feePercentage) / 1000;
        uint256 airdropAmount = _tokenAmount - jellyFee;

        OZIERC20(_token).safeTransferFrom(msg.sender, jellyVault, jellyFee);

        address airdrop = jellyFactory.deployContract{value: msg.value}(
            AIRDROP_ID,
            _integratorFeeAccount, 
            "");

        // PW: Tokens should be pulled from this contract or returned on fail. 
        OZIERC20(_token).safeTransferFrom(msg.sender, airdrop, airdropAmount);
        bytes memory airdropData = abi.encode(access_controls, _token, airdropAmount, list);
        IJellyContract(airdrop).initContract(airdropData); 
        emit AirdropDeployed(airdrop, _token, _tokenAmount);
    }


}

