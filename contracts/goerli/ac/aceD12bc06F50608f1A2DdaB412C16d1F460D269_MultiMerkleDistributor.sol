pragma solidity ^0.8.0;

import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";

contract MultiMerkleDistributor is AccessControl{

    bytes32 public constant ADDER_ROLE = keccak256("ADDER");
    // Owners can perform owner functions while adders can only perform adding periods
    //a period is an index representing payment periods. Ex first week is period 0.
    struct Period {
        bytes32 root;
        address rewardsToken;
        address rewardsAddress;
        bool isActive;
        address owner;
    }

    bool isActiveGlobal = true;

    // This is a packed array of booleans.
    mapping(uint256 => mapping(uint256 => uint256)) claimedBitMaps;
    Period[] public periods;

    event Claimed(
        uint256 period,
        uint256 index,
        address account,
        uint256 amount
    );
    event PeriodAdded(
        uint256 period,
        bytes32 root,
        address rewardsToken,
        address rewardsAddress,
        bool isActive
    );

    /*
        1. merkle root of the period
        2. token address of the rewarding token
        3. address where the reward tokens are stored (allowance should be provided to this contract)
    */
    constructor(
        bytes32 _merkleRoot,
        address _tokenAddress,
        address _rewardsFrom,
        address[] memory _adders,
        bool _isActive
    ) { 
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _setRoleAdmin(ADDER_ROLE, DEFAULT_ADMIN_ROLE);
        //sender is both admin and owner to start with
        grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        grantRole(ADDER_ROLE, msg.sender);

        //add the rest of the adders
        for (uint256 i = 0; i < _adders.length; ++i) {
            grantRole(ADDER_ROLE, _adders[i]);
        }

        //push the first period at construction.
        periods.push(
            Period(_merkleRoot, _tokenAddress, _rewardsFrom, _isActive, msg.sender)
        );
    }

    function isClaimed(uint256 period, uint256 index)
        public
        view
        returns (bool)
    {
        uint256 claimedWordIndex = index / 256;
        uint256 claimedBitIndex = index % 256;
        uint256 claimedWord = claimedBitMaps[period][claimedWordIndex];
        uint256 mask = (1 << claimedBitIndex);
        return claimedWord & mask == mask;
    }

    function _setClaimed(uint256 period, uint256 index) private {
        uint256 claimedWordIndex = index / 256;
        uint256 claimedBitIndex = index % 256;
        claimedBitMaps[period][claimedWordIndex] =
            claimedBitMaps[period][claimedWordIndex] |
            (1 << claimedBitIndex);
    }

    function claim(
        uint256 period,
        uint256 userIndex,
        address account,
        uint256 amount,
        bytes32[] calldata merkleProof
    ) public {
        require(isActiveGlobal, "Payouts are stopped for now");
        require(periods[period].isActive, "Period is not active");

        require(
            !isClaimed(period, userIndex),
            "MerkleDistributor: Drop already claimed."
        );

        // Verify the merkle proof.
        bytes32 node = keccak256(abi.encodePacked(userIndex, account, amount));

        require(
            MerkleProof.verify(merkleProof, periods[period].root, node),
            "MerkleDistributor: Invalid proof."
        );

        //transfer tokens from Rewards account to the claimers account
        require(
            IERC20(periods[period].rewardsToken).transferFrom(
                periods[period].rewardsAddress,
                account,
                amount
            ),
            "MerkleDistributor: Transfer failed."
        );

        // Mark it claimed
        _setClaimed(period, userIndex);

        emit Claimed(period, userIndex, account, amount);
    }

    function getPeriodLength() public view returns(uint length) {
        return periods.length;
    }

    /* admin functions */

    //adds a new period, owner or adder
    function addPeriod(
        bytes32 _merkleRoot,
        address _tokenAddress,
        address _rewardsFrom,
        bool _isActive
    ) public onlyAdder {
        periods.push(
            Period(_merkleRoot, _tokenAddress, _rewardsFrom, _isActive, msg.sender)
        );

        emit PeriodAdded(
            periods.length - 1,
            _merkleRoot,
            _tokenAddress,
            _rewardsFrom,
            _isActive
        );
    }

    //sets the period to active or inactive
    function activatePeriod(uint256 period, bool _isActive) public onlyPeriodOwner(period) {
        periods[period].isActive = _isActive;
    }

    //set the global active state
    function setGlobalActive(bool _isActive) public onlyAdmin {
        isActiveGlobal = _isActive;
    }

    function addAdder(address _adder) public onlyAdmin {
        grantRole(ADDER_ROLE, _adder);
    }
    function addOwner(address _owner) public onlyAdmin {
        grantRole(DEFAULT_ADMIN_ROLE, _owner);

    }

    function removeAdder(address _adder) public onlyAdmin {
        revokeRole(ADDER_ROLE, _adder);
    }

    function removeOwner(address _owner) public onlyAdmin {
        revokeRole(DEFAULT_ADMIN_ROLE, _owner);
    }

    function replaceOwner(address _oldOwner, address _newOwner) public onlyAdmin {
        revokeRole(DEFAULT_ADMIN_ROLE, _oldOwner);
        grantRole(DEFAULT_ADMIN_ROLE, _newOwner);
    }

    //updateRewardAddress
    function updateRewardAddress(uint256 period, address _rewardsFrom)
        public onlyPeriodOwner(period) { 
        periods[period].rewardsAddress = _rewardsFrom;
    }


    /*
        Modifiers for access control
    */

    modifier onlyPeriodOwner(uint periodID){
        require(periods[periodID].owner == msg.sender, "You aren't the owner of this period");
        _;
    }
    modifier onlyAdmin()
     {
        require(isAdmin(msg.sender), "Restricted to admins.");
      _;
    }

    modifier onlyAdder(){
        require(isAdder(msg.sender), "Restricted to adders.");
        _;
    }
     /// @dev Return `true` if the account belongs to the admin role.
    function isAdmin(address account)
        public virtual view returns (bool)
    {
        return hasRole(DEFAULT_ADMIN_ROLE, account);
    }

    /// @dev Return `true` if the account belongs to the adder role.
    function isAdder(address account)
        public virtual view returns (bool)
    {
        return hasRole(DEFAULT_ADMIN_ROLE, account);
    }

}

