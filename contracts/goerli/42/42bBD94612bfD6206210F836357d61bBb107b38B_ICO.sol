import '@openzeppelin/contracts/token/ERC20/extensions/ERC20Burnable.sol';
import '@openzeppelin/contracts/token/ERC20/ERC20.sol';
import '@openzeppelin/contracts/security/Pausable.sol';
import '@openzeppelin/contracts/access/Ownable.sol';


contract GoldBackedToken is ERC20, Pausable, Ownable, ERC20Burnable {

    mapping(address => bool) public blackList;
    mapping(address => uint) public timeLock; //timelock for user that can not transfer nft
    mapping(address => bool) public contributors; // the smart contract that can call functions from token


    constructor() ERC20("Gold Backed Token", "GBT") {
        _mint(msg.sender, 100_000_000 * 10 ** decimals());
    }

    function setContributor(address contributor) public onlyOwner {
        contributors[contributor] = true;
    }

    function removeContributor(address contributor) public onlyOwner {
        contributors[contributor] = false;
    }

    function setTimeLock(address user) public {
        require(contributors[msg.sender] == true, "only contibuters can call this function");
        timeLock[user] = block.timestamp + 1 days;
    }

    modifier notLocked(address account) {
        require(timeLock[account] <= block.timestamp, "You can not transfer your tokens until 24 hours later");
        _;
    }

    modifier notFreezed(address account) {
        require(blackList[account] == false, "You are in black list");
        _;
    }


    function freezeAccount(address account) public onlyOwner {
        blackList[account] = true;
    }


    function unfreezeAccount(address account) public onlyOwner {
        blackList[account] = false;
    }


    function mint(address account, uint256 amount) public onlyOwner whenNotPaused{
        _mint(account, amount);
    }


    function pausing() public onlyOwner {
        _pause();
    }
    
    function unPausing() public onlyOwner {
        _unpause();
    }


    function transferFrom(
        address sender,
        address recipient,
        uint256 amount
    ) public virtual override whenNotPaused notFreezed(sender) notFreezed(recipient) notLocked(sender) returns (bool) {

        _transfer(sender, recipient, amount);

        uint256 currentAllowance = allowance(sender, _msgSender());
        require(currentAllowance >= amount, "ERC20: transfer amount exceeds allowance");

        unchecked {
            _approve(sender, _msgSender(), currentAllowance - amount);
        }

        return true;
    }


    function transfer(
        address recipient, 
        uint256 amount
    ) public virtual override notFreezed(msg.sender) notFreezed(recipient) notLocked(msg.sender) returns (bool) {
        _transfer(_msgSender(), recipient, amount);
        return true;
    }


    function approve(
        address spender, 
        uint256 amount
    ) public virtual override whenNotPaused returns (bool) {

        _approve(_msgSender(), spender, amount);
        return true;
    }
}

