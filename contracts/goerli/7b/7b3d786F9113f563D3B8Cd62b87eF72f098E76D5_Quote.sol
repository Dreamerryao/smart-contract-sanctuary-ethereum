import "@uniswap/v3-periphery/contracts/interfaces/IQuoter.sol";
import "../libs/UniswapV2Library.sol";

contract Quote {
    address public constant FACTORY_V2 =
        0x5C69bEe701ef814a2B6a3EDD4B1652CB9cc5aA6f;

    address public constant QUOTER = 0xb27308f9F90D607463bb33eA1BeBb41C27CE5AB6;

    function getQuoteV2(
        address tokenA,
        address tokenB,
        uint256 amountIn
    ) public view returns (uint256 amountOut) {
        (uint256 reserveA, uint256 reserveB) = UniswapV2Library.getReserves(
            FACTORY_V2,
            tokenA,
            tokenB
        );
        amountOut = UniswapV2Library.getAmountOut(amountIn, reserveA, reserveB);
    }

    function getQuoteV3(bytes memory path, uint256 amountIn)
        public
        returns (uint256 amountOut)
    {
        IQuoter quote = IQuoter(QUOTER);
        amountOut = quote.quoteExactInput(path, amountIn);
    }
}

