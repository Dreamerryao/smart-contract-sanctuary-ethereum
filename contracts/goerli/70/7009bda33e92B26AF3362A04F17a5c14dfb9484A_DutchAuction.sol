import "@openzeppelin/contracts/interfaces/IERC721.sol";
import "@chainlink/contracts/src/v0.8/interfaces/AggregatorV3Interface.sol";
import "./PriceConverter.sol";

contract DutchAuction {
    // Type Declarations
    using PriceConverter for uint256;

    // State Variables
    uint private constant DURATION = 5 days;
    IERC721 public immutable nft;
    uint public immutable nftId;
    address payable public immutable seller;
    uint public immutable startingPrice;
    uint public immutable startsAt;
    uint public immutable endsAt;
    uint public immutable discountRate;
    AggregatorV3Interface internal priceFeed;

    constructor(
        uint _startingPrice,
        uint _discountRate,
        address _nft,
        uint _nftId,
        address _priceFeed
    ) {
        seller = payable(msg.sender);
        startingPrice = _startingPrice;
        discountRate = _discountRate;
        startsAt = block.timestamp;
        endsAt = block.timestamp + DURATION;

        require(
            _startingPrice >= _discountRate * DURATION,
            "The final price will be less than zero"
        );

        nft = IERC721(_nft);
        nftId = _nftId;
        priceFeed = AggregatorV3Interface(_priceFeed);
    }

    function getPrice() public view returns (uint) {
        uint timeElapsed = block.timestamp - startsAt;
        uint discount = discountRate * timeElapsed;
        return startingPrice - discount;
    }

    function getPriceInUsd() public view returns (uint) {
        uint priceInEth = getPrice();
        return priceInEth.getConversionRate(priceFeed);
    }

    function buy() external payable {
        require(block.timestamp < endsAt, "Auction ended");
        uint actualPrice = getPrice();
        require(msg.value >= actualPrice, "Value sent < Actual Price");
        nft.transferFrom(seller, msg.sender, nftId);
        uint refund = msg.value - actualPrice;
        if (refund > 0) {
            (bool success, ) = payable(msg.sender).call{value: refund}("");
            require(success == true, "Transfer failed");
        }
        selfdestruct(seller);
    }
}

