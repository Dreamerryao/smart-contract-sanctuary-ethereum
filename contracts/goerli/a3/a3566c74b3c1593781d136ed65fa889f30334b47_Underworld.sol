pragma solidity ^0.8.7;

import "@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "./interfaces/Interfaces.sol";
import "./utils/Libraries.sol";

contract Underworld is IUnderworld, OwnableUpgradeable, UUPSUpgradeable {
    address kyodaiAddy;
    address shateiAddy;
    address yenAddy;
    address dogTagAddy;
    mapping(uint256 => Campaign) public campaigns;
    mapping(uint256 => Deploy) public deployments;
    mapping(uint256 => address) public patriarchs;
    bytes32 internal entropySpice;
    uint256 public constant PCT_DEN = 10_000; // Probabilities scale, where 10_000 == 100% and 0 == 0%

    struct Campaign {
        uint16 minLevel;
        uint16 duration; //in hours
        uint16 cost;
        uint16 regPrize;
        uint16 grtPrize;
        uint16 supPrize;
        uint16 supChance; //in 10_000
        uint16 grtChance;
    }

    struct Deploy {
        uint8 campaign;
        bool double; //increase rare chance
        uint64 end;
    }

    modifier noCheating() {
        require(
            msg.sender == tx.origin && !KyodaiLibrary.isContract(msg.sender),
            "You're trying to cheat"
        );
        _;
    }

    // constructor() {
    //     _disableInitializers();
    // }

    //@dev required for UUPS Proxy Pattern
    function _authorizeUpgrade(address) internal override onlyOwner {}

    function init() external initializer {
        __Ownable_init();

        //TODO define campaigns
        campaigns[0] = Campaign({
            minLevel: 10,
            duration: 168,
            cost: 150,
            regPrize: 1,
            grtPrize: 2,
            supPrize: 3,
            supChance: 2500,
            grtChance: 3500
        });
    }

    function addCampaign(
        uint256 id,
        uint16 minLevel_,
        uint16 duration_,
        uint16 cost_,
        uint16 regPrize_,
        uint16 grtPrize_,
        uint16 supPrize_,
        uint16 supChance_,
        uint16 grtChance_
    ) external {
        campaigns[id] = Campaign({
            minLevel: minLevel_,
            duration: duration_,
            cost: cost_,
            regPrize: regPrize_,
            grtPrize: grtPrize_,
            supPrize: supPrize_,
            supChance: supChance_,
            grtChance: grtChance_
        });
    }

    function claim(uint256[] calldata tokenIds) external {
        for (uint256 i = 0; i < tokenIds.length; ++i) {
            _claim(tokenIds[i]);
        }
        _updateEntropy();
    }

    //function to unstake from game contract. must be implemented in other game contract
    function unstake(uint256 tokenId) external override {
        require(
            tokenId <= 6666
                ? msg.sender == kyodaiAddy
                : msg.sender == shateiAddy,
            "not kyodai contract"
        );
        require(_ended(deployments[tokenId]), "still on mission");
        _updateEntropy();

        delete patriarchs[tokenId];
        delete deployments[tokenId];
    }

    function startDeploymentMany(
        uint256[] calldata tokenIds,
        uint8 target_,
        bool double_
    ) external override noCheating {
        for (uint256 i = 0; i < tokenIds.length; ++i) {
            require(msg.sender == patriarchs[tokenIds[i]], "kyodai not owned");

            _deploy(tokenIds[i], msg.sender, target_, double_);
        }
    }

    //TODO jadiin stake aja
    function stakeMany(uint256[] calldata tokenIds, address who_)
        external
        override
    {
        require(
            msg.sender == kyodaiAddy || msg.sender == shateiAddy,
            "unauthorized"
        );
        for (uint256 i = 0; i < tokenIds.length; ++i) {
            patriarchs[tokenIds[i]] = who_;
        }
    }

    /*/////////////////////////////////////////
                 INTERNAL
//////////////////////////////////////////// */

    function _claim(uint256 tokenId) internal {
        Deploy memory deploy = deployments[tokenId];
        require(_ended(deploy), "still on mission");

        IDogTag(dogTagAddy).mint(
            _getReward(
                campaigns[deploy.campaign],
                tokenId,
                deploy.double,
                "KYODAI"
            ),
            patriarchs[tokenId]
        );
        if (deploy.double)
            IDogTag(dogTagAddy).mint(
                _getReward(
                    campaigns[deploy.campaign],
                    tokenId,
                    deploy.double,
                    "SHATEI"
                ),
                patriarchs[tokenId]
            );

        delete deployments[tokenId];
    }

    function _deploy(
        uint256 tokenId,
        address who_,
        uint8 target_,
        bool double_
    ) internal {
        Campaign memory campaign = campaigns[target_];
        require(
            tokenId <= 6666
                ? IKyodai(kyodaiAddy).checkLevel(tokenId) >= campaign.minLevel
                : IShatei(shateiAddy).checkLevel(tokenId) >= campaign.minLevel,
            "inssuficient level"
        );
        uint64 end = double_ ? (campaign.duration * 2) : campaign.duration;

        INeoYen(yenAddy).burn(
            who_,
            uint256(
                double_
                    ? ((campaign.cost * 190) / 100) //10% discount for the second deployment
                    : campaign.cost
            ) * 1 ether
        );
        deployments[tokenId] = Deploy({
            campaign: target_,
            double: double_,
            end: end
        });
    }

    function _ended(Deploy memory deploy) internal view returns (bool) {
        return block.timestamp > deploy.end;
    }

    function _updateEntropy() internal {
        entropySpice = keccak256(abi.encodePacked(tx.origin, block.coinbase));
    }

    function _getReward(
        Campaign memory campaign,
        uint256 tokenId,
        bool double,
        string memory spice
    ) internal view returns (uint256 reward) {
        uint256 rdn = (_randomize(_rand(), spice, tokenId) % PCT_DEN) + 1;

        // uint16 supProb = _getProb(campaign, double,0);
        // uint16 grtProb = _getProb(campaign, double,1);

        reward = uint256(
            rdn <= _getProb(campaign, double, true)
                ? campaign.supPrize
                : rdn <= _getProb(campaign, double, false)
                ? campaign.grtPrize
                : campaign.regPrize
        );
    }

    function _getProb(
        Campaign memory campaign,
        bool double,
        bool supTier
    ) internal pure returns (uint16) {
        //0 = sup, 1 = grt, 2 = reg
        uint16 prob = uint16(
            supTier
                ? campaign.supChance
                : campaign.grtChance + campaign.supChance
        );
        if (double) supTier ? prob + 500 : prob + 1000;
        return prob;
    }

    function _randomize(
        uint256 rand,
        string memory val,
        uint256 spicy
    ) internal pure returns (uint256) {
        return uint256(keccak256(abi.encode(rand, val, spicy)));
    }

    function _rand() internal view returns (uint256) {
        return
            uint256(
                keccak256(
                    abi.encodePacked(
                        msg.sender,
                        block.timestamp,
                        block.basefee,
                        block.timestamp,
                        entropySpice
                    )
                )
            );
    }
}

