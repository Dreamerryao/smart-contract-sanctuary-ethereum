            msg.sender,
            _tokenId,
            PaymentMethod.ETH,
            _price,
            _getNow()
        );
    }

    function _makeTransfer(
        address buyer,
        uint256 price,
        PaymentMethod kind
    ) internal {
        // Work out platform fee from above reserve amount
        uint256 platformFees = price;

        if (kind == PaymentMethod.ETH) {
          require(msg.value >= price, "Reel8Payment: Not enough payment");
            // Send platform fee
            (bool platformTransferSuccess, ) = platformFeeRecipient.call{
                value: price
            }("");
            require(
                platformTransferSuccess,
                "Reel8Payment: Failed to send platform"
            );
        } else {
            bool platformTransferSuccess = currency.transferFrom(
                buyer,
                platformFeeRecipient,
                price
            );
            require(
                platformTransferSuccess,
                "Reel8Payment: Failed to send platform fee in CBC"
            );
        }
    }

    /**
    @notice Method for updating platform fee address
