     * @notice set server key for ECDSA verification
     * @param _key server key
     */
    function setServerKey(address _key) external onlyOwner {
      serverKey = _key;
    }

    /////////////////////////
    // Internal and Private /
    /////////////////////////

    function _getNow() internal view virtual returns (uint256) {
        return block.timestamp;
    }
}

