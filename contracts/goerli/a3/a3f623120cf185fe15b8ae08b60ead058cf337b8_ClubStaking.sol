            "Not Enough payments"
        );
        for (uint256 i = 0; i < tokenQuantity; i++) {
            uint256 tokenId = lastTokenId + 1;
            _safeMint(msg.sender, tokenId);
            lastTokenId++;
            emit PublicSale(tokenId, msg.sender, BBG_PER_PRICE);
