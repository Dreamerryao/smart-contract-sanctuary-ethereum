    function makePayment(
        uint256 _price,
        // PaymentMethod _kind,
        uint256 _tokenId,
        uint256 _nonce,
        bytes memory _signature
    ) external payable whenNotPaused {
        require(
            _msgSender() != address(0),
            "Reel8Payment.makePayment: sender address is ZERO"
        );

        require(!nonceToValidated[_nonce], "Reel8Payment.makePayment: this nonce was already used");

        address recovered = ECDSA.recover(keccak256(abi.encodePacked(_price, _tokenId, _nonce, msg.sender)), _signature);
