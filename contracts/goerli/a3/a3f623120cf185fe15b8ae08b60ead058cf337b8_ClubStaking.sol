      ETH,
      CBC
    }

    /// @notice Event emitted only on construction. To be used by indexers
    event PaymentReceived(
      address indexed from,
      uint256 indexed tokenId,
      PaymentMethod kind,
      uint256 indexed amount,
      uint256 receivedAt
    );

    /// @notice information about payment detail
    struct PaymentDetails {
      PaymentMethod kind;
      uint256 amount;
      uint256 receivedAt;
    }

    /// @notice user wallet address -> Payment history
    mapping(address => PaymentDetails[]) public paymentHistory;

    /// @notice store used nonce from backend verification step
    mapping(uint256 => bool) public nonceToValidated;

    /// @notice where to send platform fee funds to
    address payable public platformFeeRecipient;

    /// ECDSA verification recover key
    address private serverKey;

    /// @notice for switching off auction creations, bids and withdrawals
    bool public isPaused;

    /// @notice ERC20 currency for payment
    CashBetCoin currency;

    modifier whenNotPaused() {
        require(!isPaused, "Function is currently paused");
        _;
    }

    constructor(
      address payable _platformFeeRecipient,
      address _cbcAddress,
      address _serverKey
    ) public {
        platformFeeRecipient = _platformFeeRecipient;
        currency = CashBetCoin(_cbcAddress);
        serverKey = _serverKey;
    }

