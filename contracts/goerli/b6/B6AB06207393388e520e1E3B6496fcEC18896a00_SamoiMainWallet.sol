import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "./IToggleReceive.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/proxy/Clones.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721Receiver.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155Receiver.sol";

interface UserWallet {
    function initialize(address _receiver) external;
}

// owner can be created by https://app.safe.global/
contract SamoiMainWallet is Ownable, IToggleReceive {
  using Clones for address;

  address public userWalletImplementation;
  address public nftFactoryAddr;
  bool public _canReceiveETH; // default: false

  mapping (address => uint256[]) public userToNFTTokenId;
  mapping(uint256 => mapping(address => uint256)) public userToTokenToWithdrawAmount;
  mapping(address => uint256) public walletAddressToUserID;

  constructor(address _userWalletImplementation) {
    userWalletImplementation = _userWalletImplementation;
  }

  function toggleReceiveETH(bool __canReceiveETH) external onlyOwner {
    _canReceiveETH = __canReceiveETH;
  }

  function canReceiveETH() external view returns (bool) {
    return _canReceiveETH;
  }

  function updateNFTFactoryAddr(address _nftFactoryAddr) external onlyOwner {
    nftFactoryAddr = _nftFactoryAddr;
  }

  function getUserWallet(uint256 _userID) public view returns (address payable) {
    return payable(userWalletImplementation.predictDeterministicAddress(bytes32(_userID)));
  }

  function addNFTForUser(address _user, uint256 _tokenId) external {
    require(msg.sender == nftFactoryAddr, "Only NFT Factory can add nft for users");
    userToNFTTokenId[_user].push(_tokenId);
  }

  function activateWallet(uint256 _userID) external onlyOwner {
    address payable userWallet = getUserWallet(_userID);
    if (isContract(userWallet) == false) {
      userWallet = payable(userWalletImplementation.cloneDeterministic(bytes32(_userID)));
      UserWallet(userWallet).initialize(address(this));
      walletAddressToUserID[userWallet] = _userID;
    }
  }

  // decrement user token when they withdraw in fiat, this amount is passed in by the contarct owner, there is no on-chain check
  function withdrawERC20(uint256 _userID, address _token, uint256 _amount, address _to) external onlyOwner {
    require(IERC20(_token).balanceOf(address(this)) >= _amount, "Not enough tokens in this contract");
    userToTokenToWithdrawAmount[_userID][_token] += _amount;
    IERC20(_token).transfer(_to, _amount);
  }

  function withdrawETH(uint256 _userID, uint256 _amount, address payable _to) external onlyOwner {
    require(address(this).balance >= _amount, "Not enough ETH in this contract");
    userToTokenToWithdrawAmount[_userID][address(0)] += _amount;
    _to.transfer(_amount);
  }

  function withdrawERC721(address _token, uint256 _tokenId, address _to) external onlyOwner {
    IERC721(_token).transferFrom(address(this), _to, _tokenId);
  }

  function userWalletHasETH(uint256 _userID, uint256 _amount) external view returns (bool) {
    address userWallet = getUserWallet(_userID);
    return userWallet.balance >= _amount;
  }

  function userWalletHasERC20(uint256 _userID, address _token, uint256 _amount) external view returns (bool) {
    address userWallet = getUserWallet(_userID);
    return IERC20(_token).balanceOf(userWallet) >= _amount;
  }

  function userWalletHasERC721(uint256 _userID, address _token, uint256 _tokenId) external view returns (bool) {
    address userWallet = getUserWallet(_userID);
    return IERC721(_token).ownerOf(_tokenId) == userWallet;
  }

  function onERC721Received(address, address, uint256, bytes calldata) external pure returns (bytes4) {
    return IERC721Receiver.onERC721Received.selector;
  }
  function onERC1155Received(address, address, uint256, uint256, bytes calldata) external pure returns (bytes4) {
    return IERC1155Receiver.onERC1155Received.selector;
  }

  function isContract(address addr) internal view returns (bool) {
    uint size;
    assembly { size := extcodesize(addr) }
    return size > 0;
  }

  receive() external payable {}
}