pragma solidity ^0.8.13;

import {ERC721} from "solmate/tokens/ERC721.sol";
import {Strings} from "openzeppelin-contracts/contracts/utils/Strings.sol";

contract SolmateMockERC721 is ERC721 {
    using Strings for uint256;
    string public baseURI;
    uint256 public currentId;
    mapping(uint256 => string) private _tokenURIs;

    constructor(string memory _uri) ERC721("Solmate Mock ERC721", "SOL721") {
        baseURI = _uri;
    }

    function mint(address _to, string memory _tokenURI) external {
        _safeMint(_to, currentId, "");
        _setTokenURI(currentId++, _tokenURI);
    }

    function burn(uint256 _tokenId) external {
        _burn(_tokenId);
    }

    function setBaseURI(string memory _uri) external {
        baseURI = _uri;
    }

    function tokenURI(uint256 tokenId) public view virtual override returns (string memory) {
        string memory _tokenURI = _tokenURIs[tokenId];
        string memory base = _baseURI();

        if (bytes(base).length == 0) {
            return _tokenURI;
        }

        if (bytes(_tokenURI).length > 0) {
            return string(abi.encodePacked(base, _tokenURI));
        }

        return "";
    }

    function _setTokenURI(uint256 _tokenId, string memory _tokenURI) internal virtual {
        _tokenURIs[_tokenId] = _tokenURI;
    }

    function _baseURI() internal view virtual returns (string memory) {
        return baseURI;
    }
}

contract SolmateERC721Factory {
    event Deployed(address indexed _token);

    function deploy() public returns (address token) {
        token = address(new SolmateMockERC721(""));
        emit Deployed(token);
    }
}

