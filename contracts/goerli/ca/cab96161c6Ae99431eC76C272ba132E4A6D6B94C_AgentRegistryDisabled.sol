pragma solidity ^0.8.0;

import "@openzeppelin/contracts-upgradeable/utils/structs/EnumerableSetUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/metatx/ERC2771ContextUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/metatx/MinimalForwarderUpgradeable.sol";

contract AgentRegistry is ERC2771ContextUpgradeable {
    using EnumerableSetUpgradeable for EnumerableSetUpgradeable.AddressSet;

    event AgentCreated(bytes32 agentId, string ref, address by);
    event AgentVersionPublished(
        bytes32 agentId,
        uint256 version,
        string ref,
        address by
    );
    event AgentDisabled(bytes32 agentId, address by);
    event AgentEnabled(bytes32 agentId, address by);
    event AgentDevAdded(bytes32 agentId, address dev);
    event AgentDevRemoved(bytes32 agentId, address dev);
    event AgentOwnershipTransferred(bytes32 agentId, address from, address to);

    // agent owner can add/remove agent devs (can transfer ownership)
    mapping(bytes32 => address) agentOwner;

    // agent devs can publish versions of an agent
    mapping(bytes32 => EnumerableSetUpgradeable.AddressSet) agentDevs;

    // agent should not run
    mapping(bytes32 => bool) public agentDisabled;
    mapping(bytes32 => bool) public agentExists;
    mapping(bytes32 => mapping(uint256 => string)) public agentReference;
    mapping(bytes32 => uint256) public agentLatestVersion;

    function initialize(MinimalForwarderUpgradeable forwarder)
        public
        initializer
    {
        __ERC2771Context_init(address(forwarder));
    }

    modifier onlyAgentOwner(bytes32 _agentId) {
        require(
            agentOwner[_agentId] == _msgSender(),
            "Only agent owner can perform this operation"
        );
        _;
    }

    modifier onlyAgentDev(bytes32 _agentId) {
        require(
            agentOwner[_agentId] == _msgSender() ||
                agentDevs[_agentId].contains(_msgSender()),
            "Only agent owner or agent dev can perform this operation"
        );
        _;
    }

    modifier agentMustBeEnabled(bytes32 _agentId) {
        require(!agentDisabled[_agentId], "Agent is disabled");
        _;
    }

    modifier agentMustExist(bytes32 _agentId) {
        require(agentExists[_agentId], "Agent does not exist");
        _;
    }

    modifier agentMustNotExist(bytes32 _agentId) {
        require(!agentExists[_agentId], "Agent already exists");
        _;
    }

    function addAgentDev(bytes32 _agentId, address _dev)
        public
        onlyAgentOwner(_agentId)
    {
        require(_dev != address(0), "Address(0) is not allowed");
        require(
            agentDevs[_agentId].add(_dev),
            "Address is already an agent admin"
        );
        emit AgentDevAdded(_agentId, _msgSender());
    }

    function removeAgentDev(bytes32 _agentId, address _dev)
        public
        onlyAgentOwner(_agentId)
    {
        require(_dev != address(0), "Address(0) is not allowed");
        require(
            agentDevs[_agentId].remove(_dev),
            "Address is not an agent admin"
        );
        emit AgentDevRemoved(_agentId, _msgSender());
    }

    function transferAgentOwnership(bytes32 _agentId, address _to)
        public
        onlyAgentOwner(_agentId)
    {
        require(_to != address(0), "address(0) is not allowed");
        require(agentOwner[_agentId] != _to, "Address is already owner");
        agentOwner[_agentId] = _to;
        emit AgentOwnershipTransferred(_agentId, _msgSender(), _to);
    }

    function createAgent(bytes32 _agentId, string memory _ref)
        public virtual
        agentMustNotExist(_agentId)
    {
        agentOwner[_agentId] = _msgSender();
        agentExists[_agentId] = true;
        agentReference[_agentId][0] = _ref;
        emit AgentCreated(_agentId, _ref, _msgSender());
        emit AgentVersionPublished(_agentId, 0, _ref, _msgSender());
    }

    function updateAgent(bytes32 _agentId, string memory _ref)
        public virtual
        onlyAgentDev(_agentId)
        agentMustExist(_agentId)
        agentMustBeEnabled(_agentId)
    {
        uint256 version = agentLatestVersion[_agentId] + 1;
        agentLatestVersion[_agentId] = version;
        agentReference[_agentId][version] = _ref;
        emit AgentVersionPublished(_agentId, version, _ref, _msgSender());
    }

    function disableAgent(bytes32 _agentId)
        public
        onlyAgentDev(_agentId)
        agentMustExist(_agentId)
        agentMustBeEnabled(_agentId)
    {
        agentDisabled[_agentId] = true;
        emit AgentDisabled(_agentId, _msgSender());
    }

    function enableAgent(bytes32 _agentId)
        public
        onlyAgentDev(_agentId)
        agentMustExist(_agentId)
    {
        require(agentDisabled[_agentId], "Agent is already enabled");
        agentDisabled[_agentId] = false;
        emit AgentEnabled(_agentId, _msgSender());
    }

    function getLatestRef(bytes32 _agentId)
        public
        view
        returns (string memory)
    {
        uint256 version = agentLatestVersion[_agentId];
        return agentReference[_agentId][version];
    }
}

