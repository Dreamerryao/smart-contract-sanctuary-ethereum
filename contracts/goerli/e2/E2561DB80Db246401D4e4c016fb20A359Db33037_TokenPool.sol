pragma solidity ^0.8.9;

import "./lib/Pool.sol";

contract TokenPool is BaseTokenPool {

    string private _name;

    constructor(
        string memory name_,
        address tokenAddress_
    ) BaseTokenPool(tokenAddress_) {
        _name = name_;
    }

    function name() public view returns (string memory) {
        return _name;
    }

    // sends tokens via ERC777 interface
    function send(address to, uint256 amount, bytes calldata userData, bytes calldata operatorData) external onlyOwner {
        _send(to, amount, userData, operatorData);
    }

    // sends tokens via ERC20 interface
    function transfer(address to, uint256 amount) external onlyOwner {
        _transfer(to, amount);
    }

}

