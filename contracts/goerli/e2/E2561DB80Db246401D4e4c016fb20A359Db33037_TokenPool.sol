import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC777/IERC777.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";

import "./TokenRecipientRegistry.sol";

contract BaseTokenPool is Ownable, TokenRecipientRegistry {
    IERC777 public immutable token;
    using SafeERC20 for IERC20;

    event Deposit(address operator, address from, uint256 amount);

    constructor(
        address tokenAddress_
    ) {
        token = IERC777(tokenAddress_);
    }

    function totalAssets() public view returns (uint256) {
        return token.balanceOf(address(this));
    }

    function _send(address to, uint256 amount, bytes memory userData, bytes memory operatorData) internal {
        token.operatorSend(address(this), to, amount, userData, operatorData);
    }

    function _transfer(address to, uint256 amount) internal {
        IERC20(address(token)).safeTransfer(to, amount);
    }

    function tokensReceived(
        address operator,
        address from,
        address,
        uint256 amount,
        bytes calldata,
        bytes calldata
    ) external virtual {
        emit Deposit(operator, from, amount);
    }

}

