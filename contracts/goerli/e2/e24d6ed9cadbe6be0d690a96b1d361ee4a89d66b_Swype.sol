    /*********************************************************
     * INTERNALS
     *********************************************************/

    function _onrampFulfillmentChecks(string calldata bankingTxId_, bool isValid_, address exchange_) view internal {
        if (_usedBankingTxIds[bankingTxId_]) revert BANKING_TX_ID_USED();
        if (!isValid_) revert INVALID_ONRAMP_REQUEST();
        if (!approvedExchanges[exchange_]) revert UNAPPROVED_EXCHANGE();
    }

    function _amountAfterFee(uint256 amount_) view internal returns (uint256 result) {
        assembly {
            let fee := mul(amount_, sload(swypeFee.slot))
            let feeDiv := div(fee, 10000)
            result := sub(amount_, feeDiv)
        }
    }

    function _getApprovalMarginOfError(uint256 amount_) internal pure returns (uint256 marginOfError) {
        assembly {
            marginOfError := div(amount_, 1000)
        }
    }

    function _ensureContractLiquidity(uint256 usdcAmount_) internal view {
        uint256 currentUsdcBalance = _USDC.balanceOf(address(this));
        if (currentUsdcBalance < usdcAmount_) revert INSUFFICIENT_LIQUIDITY();
    }

    function _getCallbackSelector(address token_, uint8 unit_) internal view returns (bytes4) {
        if (token_ == address(_USDC)) return this.fulfillOnrampUsdc.selector;
        if (token_ == address(0) && unit_ == 0) return this.fulfillOnrampNativeExactIn.selector;
        if (token_ == address(0) && unit_ == 1) return this.fulfillOnrampNativeExactOut.selector;
        if (unit_ == 0) return this.fulfillOnrampTokenExactIn.selector;
        return this.fulfillOnrampTokenExactOut.selector;
    }

    function _bankingTxVerificationRequest(
        string calldata txId_,
        address token_,
        uint256 amount_,
        uint8 unit_
    ) internal returns (bytes32) {
        // Create request
        Chainlink.Request memory req = buildChainlinkRequest(bankingTxVerifyJobId, address(this), _getCallbackSelector(token_, unit_));
        req.add("bankingTxId", txId_);
        req.addBytes("token", abi.encodePacked(token_));
        req.addUint("amount", amount_);
        req.addUint("unit", unit_);
        req.addBytes("recipient", abi.encodePacked(msg.sender));

        // Send request to verify banking transaction
        bytes32 requestId = sendChainlinkRequest(req, (1 * LINK_DIVISIBILITY) / 10);
        return requestId;
    }

    function _intrabankTransferRequest(address requester_, uint256 amount_) internal returns (bytes32) {
        // Create request
        Chainlink.Request memory req = buildChainlinkRequest(intrabankTransferJobId, address(this), bytes4(0));
        req.addBytes("requester", abi.encodePacked(requester_));
        req.addUint("amount", amount_);

        // Send request
        bytes32 requestId = sendChainlinkRequest(req, (1 * LINK_DIVISIBILITY) / 10);
        return requestId;
    }

    function _exactInSwap(
        address exchange_,
        bytes calldata swapData_,
        address tokenOut_
    ) internal returns (uint256) {
        // Cache token balances before
        uint256 tokenOutBalanceBefore = ERC20(tokenOut_).balanceOf(address(this));

        // Execute swap
        (bool success, ) = exchange_.call(swapData_);
        if (!success) revert EXCHANGE_FAILED();

        unchecked {
            return ERC20(tokenOut_).balanceOf(address(this)) - tokenOutBalanceBefore;
        }
    }

    function _exactOutSwap(
        address exchange_,
        bytes calldata swapData_,
        address tokenOut_,
        uint256 outputTokenAmount_,
        address recipient_
    ) internal returns (uint256) {
        // Cache token balances before
        uint256 tokenOutBalanceBefore = ERC20(tokenOut_).balanceOf(recipient_);

        // Execute swap
        (bool success, ) = exchange_.call(swapData_);
        if (!success) revert EXCHANGE_FAILED();

        uint256 amountOut;
        unchecked {
            amountOut = ERC20(tokenOut_).balanceOf(recipient_) - tokenOutBalanceBefore;
        }

        // Verify that the correct amount of tokens were received
        if (amountOut != outputTokenAmount_) revert EXCHANGE_FAILED();

        return amountOut; 
    }

