/// @title Swype On-Chain Protocol
/// @author raj, matt
contract Swype is ChainlinkClient, Initializable, UUPSUpgradeable, Pausable, Ownable, ReentrancyGuard {
    using SafeTransferLib for ERC20;
    using Chainlink for Chainlink.Request;

    /*********************************************************
     * ERRORS
     *********************************************************/

    error BANKING_TX_ID_USED();
    error INVALID_ONRAMP_REQUEST();
    error INVALID_AMOUNT();
    error INSUFFICIENT_LIQUIDITY();
    error UNAPPROVED_EXCHANGE();
    error EXCHANGE_FAILED();

    /*********************************************************
     * EVENTS
     *********************************************************/

    event OnrampRequest(bytes32 indexed requestId, string indexed bankingTxId, address token, uint256 amount, uint8 unit);
    event OnrampRequestFulFilled(bytes32 indexed requestId, string indexed bankingTxId, address token, uint256 amount);
    event OfframpRequest(bytes32 indexed requestId, address indexed token, uint256 tokenAmount, uint256 fiatAmountToReceive);
    event FeeChanged(uint256 indexed newFee);
    event BankingTxVerifyJobIdChanged(bytes32 indexed newJobId);
    event IntrabankTransferJobIdChanged(bytes32 indexed newJobId);
    event ExchangeApproved(address indexed exchange);
    event ExchangeRemoved(address indexed exchange);
    event OracleAddressChanged(address indexed newOracle);

    /*********************************************************
     * STATE
     *********************************************************/

    /// @notice usdc
    ERC20 private _USDC;

    /// @notice link
    ERC20 private _LINK;

    /// @notice weth
    WETH private _WETH;

    /// @notice Has a banking transactiond ID been used
    mapping(string => bool) private _usedBankingTxIds;

    /// @notice approved exchanges
    mapping(address => bool) public approvedExchanges;

    /// @notice jobId for banking verification
    bytes32 private bankingTxVerifyJobId;

    /// @notice jobId for intrabank transfer
    bytes32 private intrabankTransferJobId;

    /// @notice fee charged (in basis points)
    uint24 public swypeFee;

    function initialize(
        address usdc_,
        address link_,
        address weth_,
        bytes32 bankingTxVerifyJobId_,
        bytes32 intrabankTransferJobId_,
        uint24 swypeFee_,
        address swypeOracle_
    ) public initializer {
        _USDC = ERC20(usdc_);
        _LINK = ERC20(link_);
        _WETH = WETH(payable(weth_));

        bankingTxVerifyJobId = bankingTxVerifyJobId_;
        intrabankTransferJobId = intrabankTransferJobId_;

        swypeFee = swypeFee_;

        setChainlinkToken(link_);
        setChainlinkOracle(swypeOracle_);
    }

    /*********************************************************
     * ONRAMP FUNCTIONS
     *********************************************************/

    /// @notice                 Makes a request to the Swype Oracle to verify a banking transaction and on-ramp to tokens
    /// @param bankingTxId      The banking transaction ID that user made to deposit funds to swype
    /// @param token            The address of the token to on-ramp
    /// @param amount           The amount of the token / amount in usdc to on-ramp (all before fees)
    /// @param unit             The unit of the amount (0 = USDC; 1 = TOKEN)
    function onrampRequest(
        string calldata bankingTxId,
        address token,
        uint256 amount,
        uint8 unit
    ) public whenNotPaused {
        // Check whether bankingTxId is already used
        if (_usedBankingTxIds[bankingTxId]) revert BANKING_TX_ID_USED();

        // Build and send Chainlink request to verify bank transaction
        bytes32 requestId = _bankingTxVerificationRequest(
            bankingTxId,
            token,
            amount,
            unit
        );

        // emit event
        emit OnrampRequest(requestId, bankingTxId, token, amount, unit);
    }

    /// @notice                 On-ramp callback function for Chainlink to call when on-ramping to USDC
    /// @param requestId        The Chainlink request ID
    /// @param bankingTxId      The banking transaction ID that user made to deposit funds to Swype
    /// @param amount           The amount of USDC to on-ramp
    /// @param recipient        The address of the user that originally called onrampRequest
    /// @param isValid          Whether the banking transaction is valid
    function fulfillOnrampUsdc(
        bytes32 requestId,
        string calldata bankingTxId,
        uint256 amount,
        address recipient,
        bool isValid
    ) public recordChainlinkFulfillment(requestId) whenNotPaused {
        // Check that banking transaction is valid and not already used
        if (_usedBankingTxIds[bankingTxId]) revert BANKING_TX_ID_USED();
        if (!isValid) revert INVALID_ONRAMP_REQUEST();

        // Mark bankingTxId as used
        _usedBankingTxIds[bankingTxId] = true;

        // Calculate USDC amount to on-ramp after fees
        uint256 usdcAmountAfterFee = _amountAfterFee(amount);

        _USDC.safeTransfer(recipient, usdcAmountAfterFee);

        // Emit request fulfilled event
        // TODO: should this be usdcAmountAfterFee?
        emit OnrampRequestFulFilled(requestId, bankingTxId, address(_USDC), amount);
    }

    /// @notice                 On-ramp callback function for Chainlink to call when on-ramping a specific amount of USD to the native asset
    /// @param requestId        The Chainlink request ID
    /// @param bankingTxId      The banking transaction ID that user made to deposit funds to Swype
    /// @param exchange         The address of the exchange to swap on
    /// @param swapData         The pre-compiled swap data to pass to the exchange
    /// @param amount           The amount of USD to on-ramp to native asset
    /// @param recipient        The address of the user that originally called onrampRequest
    /// @param isValid          Whether the banking transaction is valid
    function fulfillOnrampNativeExactIn(
        bytes32 requestId,
        string calldata bankingTxId,
        address exchange,
        bytes calldata swapData,
        uint256 amount,
        address recipient,
        bool isValid
    ) public recordChainlinkFulfillment(requestId) whenNotPaused {
        _onrampFulfillmentChecks(bankingTxId, isValid, exchange);

        // Mark bankingTxId as used
        _usedBankingTxIds[bankingTxId] = true;

        // Swap USDC to wrapped native token
        uint256 amountOut = _exactInSwap(exchange, swapData, address(_WETH));

        // Unwrap native token
        _WETH.withdraw(amountOut);

        // Send native token to recipient
        SafeTransferLib.safeTransferETH(recipient, amountOut);

        // Emit request fulfilled event
        emit OnrampRequestFulFilled(requestId, bankingTxId, address(0), amount);
    }

    /// @notice                 On-ramp callback function for Chainlink to call when on-ramping USD to a specific amount of native assets
    /// @param requestId        The Chainlink request ID
    /// @param bankingTxId      The banking transaction ID that user made to deposit funds to Swype
    /// @param exchange         The address of the exchange to swap on
    /// @param swapData         The pre-compiled swap data to pass to the exchange
    /// @param amountOut        The amount of native asset to on-ramp to
    /// @param recipient        The address of the user that originally called onrampRequest
    /// @param isValid          Whether the banking transaction is valid
    function fulfillOnrampNativeExactOut(
        bytes32 requestId,
        string calldata bankingTxId,
        address exchange,
        bytes calldata swapData,
        uint256 amountOut,
        address recipient,
        bool isValid
    ) external recordChainlinkFulfillment(requestId) whenNotPaused {
        _onrampFulfillmentChecks(bankingTxId, isValid, exchange);

        // Mark bankingTxId as used
        _usedBankingTxIds[bankingTxId] = true;

        // Swap USDC to wrapped native token
        uint256 amountOut = _exactOutSwap(exchange, swapData, address(_WETH), amountOut, address(this));

        // Unwrap native token
        _WETH.withdraw(amountOut);

        // Send native token to recipient
        SafeTransferLib.safeTransferETH(recipient, amountOut);

        // Emit request fulfilled event
        emit OnrampRequestFulFilled(requestId, bankingTxId, address(0), amountOut);
    }

    /// @notice                 On-ramp callback function for Chainlink to call when on-ramping a specific amount of USD to a token
    /// @param requestId        The Chainlink request ID
    /// @param bankingTxId      The banking transaction ID that user made to deposit funds to Swype
    /// @param exchange         The address of the exchange to swap on
    /// @param swapData         The pre-compiled swap data to pass to the exchange
    /// @param amount           The amount of USD to on-ramp to token
    /// @param tokenOut         The token to receive after swap
    /// @param isValid          Whether the banking transaction is valid
    function fulfillOnrampTokenExactIn(
        bytes32 requestId,
        string calldata bankingTxId,
        address exchange,
        bytes calldata swapData,
        uint256 amount,
        address tokenOut,
        bool isValid
    ) public recordChainlinkFulfillment(requestId) whenNotPaused {
        _onrampFulfillmentChecks(bankingTxId, isValid, exchange);

        // Mark bankingTxId as used
        _usedBankingTxIds[bankingTxId] = true;

        // Calculate USDC amount to on-ramp after fees
        uint256 usdcAmountAfterFee = _amountAfterFee(amount);

        // Swap USDC to token
        _exactInSwap(exchange, swapData, tokenOut);

        // Emit request fulfilled event
        emit OnrampRequestFulFilled(requestId, bankingTxId, tokenOut, amount);
    }

    /// @notice                 On-ramp callback function for Chainlink to call when on-ramping USD to a specific amount of a token
    /// @param requestId        The Chainlink request ID
    /// @param bankingTxId      The banking transaction ID that user made to deposit funds to Swype
    /// @param exchange         The address of the exchange to swap on
    /// @param swapData         The pre-compiled swap data to pass to the exchange
    /// @param tokenOut         The token to receive after swap
    /// @param amountOut        The amount of token to on-ramp to
    /// @param recipient        The address of the user that originally called onrampRequest
    /// @param isValid          Whether the banking transaction is valid
    function fulfillOnrampTokenExactOut(
        bytes32 requestId,
        string calldata bankingTxId,
        address exchange,
        bytes calldata swapData,
        address tokenOut,
        uint256 amountOut,
        address recipient,
        bool isValid
    ) external recordChainlinkFulfillment(requestId) whenNotPaused {
        _onrampFulfillmentChecks(bankingTxId, isValid, exchange);

        // Mark bankingTxId as used
        _usedBankingTxIds[bankingTxId] = true;

        // Swap USDC to token
        uint256 amountOut = _exactOutSwap(exchange, swapData, tokenOut, amountOut, recipient);

        // Emit request fulfilled event
        emit OnrampRequestFulFilled(requestId, bankingTxId, tokenOut, amountOut);
    }

    /*********************************************************
     * OFFRAMP FUNCTIONS
     *********************************************************/

    /// @notice                 Off-ramp USDC to USD in a bank account
    /// @param usdcAmount       The amount of USDC to off-ramp
    function offrampUsdc(
        uint256 usdcAmount
    ) external whenNotPaused {
        // Get amount of USD to return to user after fees
        uint256 usdcAmountAfterFee = _amountAfterFee(usdcAmount);

        // Send USDC to Swype
        _USDC.safeTransferFrom(msg.sender, address(this), usdcAmount);

        // Build and send Chainlink request to verify bank transaction
        bytes32 requestId = _intrabankTransferRequest(msg.sender, usdcAmountAfterFee);

        // Emit successful off-ramp event
        emit OfframpRequest(requestId, address(_USDC), usdcAmount, usdcAmountAfterFee);
    }

    /// @notice                 Off-ramp a chain's native token to USD in a bank account
    /// @param exchange         The address of the exchange to swap on
    /// @param swapData         The pre-compiled swap data to pass to the exchange
    /// @param amount           The amount of native token to off-ramp
    function offrampNativeExactIn(
        address exchange,
        bytes calldata swapData,
        uint256 amount // todo: remove this and use msg.value?
    ) external payable whenNotPaused {
        // Check that exchange is approved
        if (!approvedExchanges[exchange]) revert UNAPPROVED_EXCHANGE();

        // Check that value sent in matches function argument
        if (msg.value != amount) revert INVALID_AMOUNT();

        // Wrap native token
        _WETH.deposit{value: amount}();

        // Swap wrapped native token to USDC
        uint256 amountOut = _exactInSwap(exchange, swapData, address(_USDC));

        // Get amount of USD to return to user after fees
        uint256 usdcAmountAfterFee = _amountAfterFee(amountOut);

        // Build and send Chainlink request to verify bank transaction
        bytes32 requestId = _intrabankTransferRequest(msg.sender, usdcAmountAfterFee);

        // Emit successful off-ramp event
        emit OfframpRequest(requestId, address(_WETH), amount, usdcAmountAfterFee);
    }

    /// @notice                 Off-ramp a chain's native token to a specific amount of USD in a bank account
    /// @param exchange         The address of the exchange to swap on
    /// @param swapData         The pre-compiled swap data to pass to the exchange
    /// @param expectedAmountIn The expected amount of native token to off-ramp
    /// @param usdcAmountOut    The amount of USDC to swap to to off-ramp as USD
    function offrampNativeExactOut(
        address exchange,
        bytes calldata swapData,
        uint256 expectedAmountIn, // todo: remove this and just use msg.value?
        uint256 usdcAmountOut
    ) external payable whenNotPaused {
        // Check that exchange is approved
        if (!approvedExchanges[exchange]) revert UNAPPROVED_EXCHANGE();

        // Check that value sent in matches function argument
        if (msg.value != expectedAmountIn) revert INVALID_AMOUNT();

        // Wrap native token
        _WETH.deposit{value: expectedAmountIn}();

        // Cache WETH balance
        uint256 wethBalanceBefore = _WETH.balanceOf(address(this));

        // Swap wrapped native token to USDC
        uint256 amountOut = _exactOutSwap(exchange, swapData, address(_USDC), usdcAmountOut, address(this));

        // Return any excess WETH to user
        uint256 excessWeth;
        uint256 wethBalanceAfter = _WETH.balanceOf(address(this));
        if (wethBalanceAfter > wethBalanceBefore) {
            excessWeth = wethBalanceAfter - wethBalanceBefore;
            _WETH.withdraw(excessWeth);
            SafeTransferLib.safeTransferETH(msg.sender, excessWeth);
        }

        // Get amount of USD to return to user after fees
        uint256 usdcAmountAfterFee = _amountAfterFee(amountOut);

        // Build and send Chainlink request to verify bank transaction
        bytes32 requestId = _intrabankTransferRequest(msg.sender, usdcAmountAfterFee);

        // Emit successful off-ramp event
        emit OfframpRequest(requestId, address(_WETH), expectedAmountIn - excessWeth, usdcAmountAfterFee);
    }

    /// @notice                 Off-ramp a token to USD in a bank account
    /// @param exchange         The address of the exchange to swap on
    /// @param swapData         The pre-compiled swap data to pass to the exchange
    /// @param token            The token to off-ramp from
    /// @param amount           The amount of token to off-ramp
    function offrampTokenExactIn(
        address exchange,
        bytes calldata swapData,
        address token,
        uint256 amount
    ) external whenNotPaused {
        // Check that exchange is approved
        if (!approvedExchanges[exchange]) revert UNAPPROVED_EXCHANGE();

        // Get token from user
        ERC20(token).safeTransferFrom(msg.sender, address(this), amount);

        // Swap token to USDC
        ERC20(token).safeApprove(exchange, amount);
        uint256 amountOut = _exactInSwap(exchange, swapData, address(_USDC));

        // Get amount of USD to return to user after fees
        uint256 usdcAmountAfterFee = _amountAfterFee(amountOut);

        // Build and send Chainlink request to verify bank transaction
        bytes32 requestId = _intrabankTransferRequest(msg.sender, usdcAmountAfterFee);

        // Emit successful off-ramp event
        emit OfframpRequest(requestId, token, amount, usdcAmountAfterFee);
    }

    /// @notice                 Off-ramp a token to a specific amount of USD in a bank account
    /// @param exchange         The address of the exchange to swap on
    /// @param swapData         The pre-compiled swap data to pass to the exchange
    /// @param token            The token to off-ramp from
    /// @param expectedAmountIn The expected amount of token to off-ramp
    /// @param usdcAmountOut    The amount of USDC to swap to to off-ramp as USD
    function offrampTokenExactOut(
        address exchange,
        bytes calldata swapData,
        address token,
        uint256 expectedAmountIn,
        uint256 usdcAmountOut
    ) external whenNotPaused {
        // Check that exchange is approved
        if (!approvedExchanges[exchange]) revert UNAPPROVED_EXCHANGE();

        // Get token from user
        ERC20(token).safeTransferFrom(msg.sender, address(this), expectedAmountIn);

        // Swap token to USDC
        ERC20(token).safeApprove(exchange, expectedAmountIn);
        uint256 amountOut = _exactOutSwap(exchange, swapData, address(_USDC), usdcAmountOut, address(this));

        // Return any excess token to user
        uint256 excessToken;
        uint256 tokenBalanceAfter = ERC20(token).balanceOf(address(this));
        if (tokenBalanceAfter > expectedAmountIn) {
            excessToken = tokenBalanceAfter - expectedAmountIn;
            ERC20(token).safeTransfer(msg.sender, excessToken);
        }

        // Get amount of USD to return to user after fees
        uint256 usdcAmountAfterFee = _amountAfterFee(amountOut);

        // Build and send Chainlink request to verify bank transaction
        bytes32 requestId = _intrabankTransferRequest(msg.sender, usdcAmountAfterFee);

        // Emit successful off-ramp event
        emit OfframpRequest(requestId, token, expectedAmountIn - excessToken, usdcAmountAfterFee);
    }

