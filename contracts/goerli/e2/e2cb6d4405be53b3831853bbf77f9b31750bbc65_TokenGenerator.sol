contract TokenGenerator {
    mapping (address => address[]) public userERC20Contracts;
    mapping (address => address[]) public userERC721Contracts;
    mapping (address => address[]) public userERC1155Contracts;

    function generateERC20(
        string memory _name,
        string memory _symbol,
        uint8 _decimals,
        uint256 _initSupply
    ) public {
        DevERC20 newERC20 = new DevERC20(_name, _symbol, _decimals, _initSupply, msg.sender);
        userERC20Contracts[msg.sender].push(address(newERC20));
    }

    function generateERC721(
        string memory _name,
        string memory _symbol
    ) public {
        DevERC721 newERC721 = new DevERC721(_name, _symbol, msg.sender);
        userERC721Contracts[msg.sender].push(address(newERC721));
    }

    function generateERC1155(
        string memory _uri
    ) public {
        DevERC1155 newERC1155 = new DevERC1155(_uri, msg.sender);
        userERC1155Contracts[msg.sender].push(address(newERC1155));
    }

}