pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract QuickDraw is Ownable {
    using SafeMath for uint256;
    address payable prizeRecipient;
    address public winner;
    uint256 public ticketPrice = 1 * 10**18;
    uint256 nonce;
    uint256 public ticketsSold = 0;
    uint256 public ticketsTotal = 3;
    uint256 public percReferral = 2;
    uint256 public percSupport = 3;

    enum State {
        Open,
        Closed,
        Drawn
    }

    State public currentState = State.Open;

    mapping(uint256 => address) public ticketNumbers;
    mapping(address => bool) public addressjoined;
    mapping(address => bool) public walletAcceptedTermsAndConditions;
    mapping(address => address) public referralAddress;

    event TicketPurchased(address purchaser, uint256 ticketNumber);
    event WinnerDrawn(address winner);
    event LotteryRestarted();
    event TicketPriceChanged(uint256);
    event acceptedTnC(address);

    function acceptTermsAndConditions() external {
        walletAcceptedTermsAndConditions[msg.sender] = true;
        emit acceptedTnC(msg.sender);
    }

    function setTicketPrice(uint256 _price) external onlyOwner {
        ticketPrice = _price;
        emit TicketPriceChanged(_price);
    }

    function setSupportPercentage(uint256 _perc) external onlyOwner {
        percSupport = _perc;
    }

    function setRefPrecentage(uint256 _perc) external onlyOwner {
        percReferral = _perc;
    }

    function setDrawTicketMax(uint256 _max) external onlyOwner {
        ticketsTotal = _max;
    }

    function purchaseTicket(address _referralAddress) public payable {
        require(tx.origin == msg.sender, "Contracts can't participate");

        require(
            walletAcceptedTermsAndConditions[msg.sender] == true,
            "Ticket purchaser needs to accept TnC"
        );

        require(
            currentState == State.Open,
            "The lottery is not open for ticket sales."
        );

        require(
            addressjoined[msg.sender] == false,
            "address has already joined this draw."
        );

        referralAddress[msg.sender] = _referralAddress;

        require(msg.value == ticketPrice, "Incorrect ticket price.");

        require(
            ticketsSold < ticketsTotal,
            "All tickets for the current draw have been sold."
        );

        ticketNumbers[ticketsSold] = msg.sender;
        ticketsSold++;

        addressjoined[msg.sender] = true;

        if (ticketsSold == ticketsTotal) {
            currentState = State.Closed;
        }

        emit TicketPurchased(msg.sender, ticketsSold);
    }

    function drawWinner(uint256 _seed) external onlyOwner {
        uint256 randomTicketNumber = random(_seed);

        // Find the address of the purchaser with the matching ticket number
        for (uint256 i = 0; i < ticketsSold; i++) {
            if (i == randomTicketNumber) {
                prizeRecipient = payable(ticketNumbers[i]);
                break;
            }
        }

        require(prizeRecipient != address(0), "No winner was found.");

        payable(owner()).transfer(
            (address(this).balance).mul(percSupport).div(100)
        );
        payable(referralAddress[prizeRecipient]).transfer(
            (address(this).balance).mul(percReferral).div(100)
        );
        prizeRecipient.transfer(address(this).balance);

        currentState = State.Drawn;

        emit WinnerDrawn(prizeRecipient);

        ticketsSold = 0;
        prizeRecipient = payable(address(0));
        for (uint256 i = 0; i < ticketsTotal; i++) {
            addressjoined[ticketNumbers[i]] = false;
            referralAddress[ticketNumbers[i]] = address(0);
            ticketNumbers[i] = address(0);
        }

        // Change the state to Open

        currentState = State.Open;

        emit LotteryRestarted();
    }

    function random(uint256 _seed) private returns (uint256) {
        bytes32 blockHash = keccak256(
            abi.encodePacked(block.difficulty, block.timestamp, _seed, nonce)
        );
        nonce++;

        return uint256(blockHash) % ticketsTotal;
    }
}

