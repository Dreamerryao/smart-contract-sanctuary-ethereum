pragma solidity 0.8.16;

import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

contract ICOPayment is AccessControl {

    event EthTransferred(
        address indexed from,
        address indexed to,
        uint256 amount
    );

    event TokenTransferred(
        address indexed from,
        address indexed to,
        uint256 amount
    );

    event OwnershipTransferred(
        address indexed previousOwner,
        address indexed newOwner
    );

    event SignerChanged(
        address indexed previousSigner,
        address indexed newSigner
    );

    event TreasuryWalletUpdated(
        address indexed previousTreasuryWallet,
        address indexed newTreasuryWallet
    );

    event AdminFeeUpdated(
        uint256 adminFee
    );

    address public owner;

    address public signer;

    uint256 public adminFee;

    address public treasuryWallet;

    bytes32 public constant ADMIN_ROLE = keccak256("ADMIN_ROLE");
    bytes32 public constant SIGNER_ROLE = keccak256("SIGNER_ROLE");

    struct Sign {
        uint8 v;
        bytes32 r;
        bytes32 s;
        uint256 nonce;
    }

    constructor (address _treasuryWallet, uint256 _adminFee) {
        _setupRole(ADMIN_ROLE, owner);
        _setupRole(SIGNER_ROLE, owner);
        owner = msg.sender;
        signer = msg.sender;
        adminFee = _adminFee;
        treasuryWallet = _treasuryWallet;
    }

    function transferOwnership(address newOwner) external onlyRole(ADMIN_ROLE) returns(bool) {
        require(newOwner != address(0), "new owner is zero address");
        _revokeRole(ADMIN_ROLE, owner);
        emit OwnershipTransferred(owner, newOwner);
        owner = newOwner;
        _setupRole(ADMIN_ROLE, owner);
        return true;
    }

    function setSignerAddress(address newSigner) external onlyRole(SIGNER_ROLE) returns(bool) {
        require(newSigner != address(0), "new signer is zero address");
        _revokeRole(SIGNER_ROLE, signer);
        emit SignerChanged(signer, newSigner);
        signer = newSigner;
        _setupRole(SIGNER_ROLE, signer);
        return true;
    }

    function setTreasuryWallet(address newTreasuryWallet) external onlyRole(ADMIN_ROLE) returns(bool) {
        require(newTreasuryWallet != address(0), "new treasury is zero address");
        emit TreasuryWalletUpdated(treasuryWallet, newTreasuryWallet);
        treasuryWallet = newTreasuryWallet;
        return true;
    }

    function recoverETH(address payable reciever, uint256 amount) external onlyRole(ADMIN_ROLE) payable returns(bool) {
        uint256 contractBalance = address(this).balance;
        require(amount <= contractBalance, "Insufficient Balance");
        reciever.transfer(amount);
        emit EthTransferred(msg.sender, reciever, amount);
        return true;
    }

    function recoverToken(address tokenAddress, address reciever, uint256 amount) external onlyRole(ADMIN_ROLE) returns(bool) {
        require(amount <= IERC20(tokenAddress).balanceOf(address(this)), "Insufficient Balance");
        IERC20(tokenAddress).transferFrom(msg.sender, reciever, amount);
        emit TokenTransferred(msg.sender, reciever, amount);
        return true;
    }

    function setAdminFee(uint256 _adminFee) external onlyRole(ADMIN_ROLE) returns(bool) {
        adminFee = _adminFee;
        emit AdminFeeUpdated(adminFee);
        return true;
    }

    function sendEth(address payable reciever, Sign memory sign) external payable returns(bool) {
        verifySign(address(this), msg.sender, reciever, msg.value, sign);
        (uint256 tTransferAmount, uint256 fee) = transferFee(msg.value);
        reciever.transfer(tTransferAmount);
        emit EthTransferred(msg.sender, reciever, tTransferAmount);
        if(fee != 0) {
            payable(treasuryWallet).transfer(fee);
            emit EthTransferred(msg.sender, treasuryWallet, fee);
        }
        return true;
    }

    function sendtoken(address tokenAddress, address reciever, uint256 amount, Sign memory sign) external returns(bool) {
        verifySign(tokenAddress, msg.sender, reciever, amount, sign);
        (uint256 tTransferAmount, uint256 fee) = transferFee(amount);
        IERC20(tokenAddress).transferFrom(msg.sender, reciever, tTransferAmount);
        emit TokenTransferred(msg.sender, reciever, tTransferAmount);
        if(fee != 0) {
            IERC20(tokenAddress).transferFrom(msg.sender, treasuryWallet, fee);
            emit TokenTransferred(msg.sender, treasuryWallet, fee);
        }
        return true;
    }

    function transferFee(uint256 amount) internal view returns(uint256 tAmount, uint256 fee) {
        fee = amount * adminFee / 1000;
        tAmount = amount - fee;
    }

    function verifySign(address tokenAddress, address sender, address receiver, uint256 amount, Sign memory sign) internal view {
        bytes32 hash = keccak256(
            abi.encodePacked(
                this,
                tokenAddress,
                sender,
                receiver,
                amount,
                sign.nonce
            )
        );

        require (
            signer ==
                ecrecover(
                    keccak256(
                        abi.encodePacked(
                            "\x19Ethereum Signed Message:\n32",
                            hash
                        )
                    ),
                    sign.v,
                    sign.r,
                    sign.s
                ),
                "Owner sign verification failed"
        );
    }
}

