pragma solidity ^0.8.0;

import "./ERC721A.sol";
import "@chainlink/contracts/src/v0.8/ConfirmedOwner.sol";
import "@chainlink/contracts/src/v0.8/VRFV2WrapperConsumerBase.sol";
import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

contract HongBao is ERC721A,
ConfirmedOwner,
ReentrancyGuard,
VRFV2WrapperConsumerBase {
    using Strings for uint256;

    uint256 private maxWlSupply = 80;
    uint256 private maxMintSupply = 100;
    uint256 private wlMintPrice = 0.1 ether;
    uint256 private publicMintPrice = 0.2 ether;
    bytes32 public merkleRoot;

    bool public wlSaleActive;
    bool public publicSaleActive;

    bool public refundActive;
    address private refundAddress;
    mapping(uint256 => bool) public hasRefund;

    string private baseURI;
    string public baseExtension = ".json";

    bool private firstPrizeActive;
    uint8 private firstPrizeAmount = 0;
    uint8 private firstPrizeSupply = 1;
    uint256 private firstPrizeReward = 1 ether;
    mapping(uint256 => uint8) public firstPrizeClaim;

    bool private secondPrizeActive;
    uint8 private secondPrizeAmount = 0;
    uint8 private secondPrizeSupply = 2;
    uint256 private secondPrizeReward = 0.5 ether;
    mapping(uint256 => uint8) public secondPrizeClaim;

    bool private thirdPrizeActive;
    uint8 private thirdPrizeAmount = 0;
    uint8 private thirdPrizeSupply = 15;
    uint256 private thirdPrizeReward = 0.2 ether;
    mapping(uint256 => uint8) public thirdPrizeClaim;

    bool private encourageActive;
    uint256 public encourageSupply;
    uint256 public encourageReward;
    mapping(uint256 => bool) public hasClaimReward;

    event RandomClaimPrizeEvent(uint8 priority, uint256 tokenId, uint256 randomWord, uint256 supply);

    address public constant linkAddress = 0x514910771AF9Ca656af840dff83E8264EcF986CA;

    address public constant wrapperAddress = 0x5A861794B927983406fCE1D062e00b9368d97Df6;

    event RequestSent(uint256 requestId, uint32 numWords);

    event RequestFulfilled(uint256 requestId, uint256[] randomWords, uint256 payment);

    struct RequestStatus {
        uint256 paid; // amount paid in link
        bool fulfilled; // whether the request has been successfully fulfilled
        uint256[] randomWords;
    }

    mapping(uint256 => RequestStatus) public s_requests; /* requestId --> requestStatus */

    uint256[] public requestIds;
    uint256 public lastRequestId;
    uint32 private callbackGasLimit = 500_000;
    uint16 private requestConfirmations = 3;

    constructor()
    ERC721A("HongBao", "HBT")
    ConfirmedOwner(msg.sender)
    VRFV2WrapperConsumerBase(linkAddress, wrapperAddress) {
        refundAddress = msg.sender;
    }

    /**
     * @dev Indicate the token id start index.
     *
     * This contract will generate winning numbers between 1 and 100, so override start token id.
     */
    function _startTokenId()
    internal
    view
    virtual
    override
    returns (uint256) {
        return 1;
    }

    /**
     * @dev See {IERC721Metadata-tokenURI}.
     */
    function tokenURI(uint256 tokenId)
    public
    view
    virtual
    override
    returns (string memory) {
        if (!_exists(tokenId)) revert URIQueryForNonexistentToken();

        string memory baseTokenURI = _baseURI();
        return bytes(baseURI).length != 0 ?
        string(abi.encodePacked(baseTokenURI, tokenId.toString(), baseExtension)) : '';
    }

    /**
     * @dev White list sale mint.
     */
    function wlSaleMint(uint256 amount, bytes32[] calldata proof)
    external
    payable {
        require(wlSaleActive, "White list mint not begin");
        require(msg.value >= amount * wlMintPrice, "Insufficient payment");
        require(_totalMinted() + amount <= maxWlSupply, "Max wl mint supply");
        require(_isAllowListed(msg.sender, proof, merkleRoot), "Not on allow list");

        _safeMint(msg.sender, amount);
    }

    function _isAllowListed(address _account, bytes32[] calldata _proof, bytes32 _root)
    internal
    pure
    returns (bool) {
        return MerkleProof.verify(_proof, _root, _leaf(_account));
    }

    function _leaf(address _account)
    internal
    pure
    returns (bytes32) {
        return keccak256(abi.encodePacked(_account));
    }

    /**
     * @dev Public sale mint.
     */
    function publicSaleMint(uint256 amount)
    external
    payable
    noContract {
        require(publicSaleActive, "Public sale is not active");
        require(msg.value >= amount * publicMintPrice, "Insufficient payment");
        require(_totalMinted() + amount <= maxMintSupply, "Max public mint supply");

        _safeMint(msg.sender, amount);
    }

    /**
     * @dev No matter who the matter is, each token id can only be refunded once.
     * @param tokenIds Array of token ids for refund.
     */
    function refund(uint256[] calldata tokenIds)
    noContract
    nonReentrant
    external {
        require(refundActive, "Refund is not active");

        for(uint8 i = 0 ; i < tokenIds.length ; i++) {
            uint256 tokenId = tokenIds[i];
            require(msg.sender == ownerOf(tokenId), "Not token owner");
            require(!hasRefund[tokenId], "Already refunded");
            require(!hasClaimReward[tokenId], "Already claim reward");

            hasRefund[tokenId] = true;
            hasClaimReward[tokenId] = true;
            transferFrom(msg.sender, refundAddress, tokenId);
        }

        uint256 refundAmount = tokenIds.length * wlMintPrice;
        Address.sendValue(payable(msg.sender), refundAmount);
    }

    function _baseURI()
    internal
    view
    override
    returns (string memory) {
        return baseURI;
    }

    function setPublicSalePrice(uint256 _publicSalePrice)
    external
    onlyOwner {
        publicMintPrice = _publicSalePrice;
    }

    function setRefundAddress(address _refundAddress)
    external
    onlyOwner {
        refundAddress = _refundAddress;
    }

    function setMerkleRoot(bytes32 _root)
    external
    onlyOwner {
        merkleRoot = _root;
    }

    function setBaseURI(string memory uri)
    external
    onlyOwner {
        baseURI = uri;
    }

    function setCallBackGasLimit(uint32 _callbackGasLimit)
    external
    onlyOwner {
        callbackGasLimit = _callbackGasLimit;
    }

    function toggleWlSaleStatus()
    external
    onlyOwner {
        wlSaleActive = !wlSaleActive;
    }

    function togglePublicSaleStatus()
    external
    onlyOwner {
        publicSaleActive = !publicSaleActive;
    }

    function toggleRefundActive()
    external
    onlyOwner {
        refundActive = !refundActive;
    }

    function toggleFirstPrizeActive()
    external
    onlyOwner {
        firstPrizeActive = !firstPrizeActive;
    }

    function toggleSecondPrizeActive()
    external
    onlyOwner {
        secondPrizeActive = !secondPrizeActive;
    }

    function toggleThirdPrizeActive()
    external
    onlyOwner {
        thirdPrizeActive = !thirdPrizeActive;
    }

    function toggleEncourageActive()
    external
    onlyOwner {
        encourageActive = !encourageActive;
    }

    function requestRandomWordsWithNum(uint32 _numWords)
    external
    onlyOwner
    returns (uint256 requestId) {
        requestId = requestRandomness(callbackGasLimit, requestConfirmations, _numWords);
        s_requests[requestId] = RequestStatus(
        {
        paid: VRF_V2_WRAPPER.calculateRequestPrice(callbackGasLimit),
        randomWords: new uint256[](0),
        fulfilled: false
        }
        );
        requestIds.push(requestId);
        lastRequestId = requestId;
        emit RequestSent(requestId, _numWords);
        return requestId;
    }

    function fulfillRandomWords(uint256 _requestId, uint256[] memory _randomWords)
    internal
    override {
        require(s_requests[_requestId].paid > 0, "request not found");
        s_requests[_requestId].fulfilled = true;
        s_requests[_requestId].randomWords = _randomWords;
        emit RequestFulfilled(
            _requestId,
            _randomWords,
            s_requests[_requestId].paid
        );
    }

    function getRequestStatus(uint256 _requestId)
    external
    view
    returns (uint256 paid, bool fulfilled, uint256[] memory randomWords) {
        require(s_requests[_requestId].paid > 0, "request not found");
        RequestStatus memory request = s_requests[_requestId];
        return (request.paid, request.fulfilled, request.randomWords);
    }

    function getRequestNumRandom(uint256 _requestId)
    internal
    view
    returns (uint256[] memory randomWords) {
        require(s_requests[_requestId].paid > 0, "request not found");
        return s_requests[_requestId].randomWords;
    }

    function airDropHongBao(address _address)
    external
    onlyOwner {
        _mint(_address, 1);
        // Air dropped nft can not refund
        hasRefund[_currentIndex] = true;
    }

    function withDraw(uint256 amount)
    external
    onlyOwner {
        uint256 balance = address(this).balance;
        require(balance >= amount, "Balance is less than amount");
        Address.sendValue(payable(owner()), amount);
    }

    function withdrawLink()
    public
    onlyOwner {
        LinkTokenInterface link = LinkTokenInterface(linkAddress);
        require(
            link.transfer(msg.sender, link.balanceOf(address(this))),
            "Unable to transfer"
        );
    }

    function setFirstPrizeClaim(uint256 _requestId)
    external
    onlyOwner {
        require(s_requests[_requestId].paid > 0, "request not found");
        uint256[] memory randomWords = s_requests[_requestId].randomWords;
        require(firstPrizeAmount + randomWords.length <= firstPrizeSupply,
            "Random words error");

        for(uint8 i = 0 ; i < randomWords.length ; i++) {
            uint256 randomWord = randomWords[i];
            uint256 tokenId = getTokenIdByRandomWord(randomWord);

            hasClaimReward[tokenId] = true;
            firstPrizeClaim[tokenId] += 1;
            firstPrizeAmount += 1;
            emit RandomClaimPrizeEvent(1, tokenId, randomWord, totalSupply());
        }
    }

    /**
     * @dev Congratulations!
     * @param tokenId First prize token id.
     */
    function withDrawFirstPrizeReward(uint256 tokenId)
    external
    noContract
    nonReentrant {
        require(firstPrizeActive, "With draw first prize not begin");
        require(msg.sender == ownerOf(tokenId), "Claim owner error");
        require(firstPrizeSupply > 0, "First prize supply error");
        require(firstPrizeClaim[tokenId] > 0, "Claim prize error");

        firstPrizeClaim[tokenId] -= 1;
        firstPrizeSupply -= 1;
        Address.sendValue(payable(msg.sender), firstPrizeReward);
    }

    function setSecondPrizeClaim(uint256 _requestId)
    external
    onlyOwner {
        require(s_requests[_requestId].paid > 0, "request not found");
        uint256[] memory randomWords = s_requests[_requestId].randomWords;
        require(secondPrizeAmount + randomWords.length <= secondPrizeSupply,
            "Random words error");

        for(uint8 i = 0 ; i < randomWords.length ; i++) {
            uint256 randomWord = randomWords[i];
            uint256 tokenId = getTokenIdByRandomWord(randomWord);

            hasClaimReward[tokenId] = true;
            secondPrizeClaim[tokenId] += 1;
            secondPrizeAmount += 1;
            emit RandomClaimPrizeEvent(2, tokenId, randomWord, totalSupply());
        }
    }

    /**
     * @dev Congratulations!
     * @param tokenId Second prize token id.
     */
    function withDrawSecondPrizeReward(uint256 tokenId)
    external
    noContract
    nonReentrant {
        require(secondPrizeActive, "With draw second prize not begin");
        require(msg.sender == ownerOf(tokenId), "Claim winner error");
        require(secondPrizeSupply > 0, "Second prize supply error");
        require(secondPrizeClaim[tokenId] > 0, "Claim prize error");

        secondPrizeClaim[tokenId] -= 1;
        secondPrizeSupply -= 1;
        Address.sendValue(payable(msg.sender), secondPrizeReward);
    }

    function setThirdPrizeClaim(uint256 _requestId)
    external
    onlyOwner {
        require(s_requests[_requestId].paid > 0, "request not found");
        uint256[] memory randomWords = s_requests[_requestId].randomWords;
        require(thirdPrizeAmount + randomWords.length <= thirdPrizeSupply,
            "Random words error");

        for(uint8 i = 0 ; i < randomWords.length ; i++) {
            uint256 randomWord = randomWords[i];
            uint256 tokenId = getTokenIdByRandomWord(randomWord);

            hasClaimReward[tokenId] = true;
            thirdPrizeClaim[tokenId] += 1;
            thirdPrizeAmount += 1;
            emit RandomClaimPrizeEvent(3, tokenId, randomWord, totalSupply());
        }

    }

    /**
     * @dev Congratulations!
     * @param tokenId Third prize token id.
     */
    function withDrawThirdPrizeReward(uint256 tokenId)
    external
    noContract
    nonReentrant {
        require(thirdPrizeActive, "With draw third prize not begin");
        require(msg.sender == ownerOf(tokenId), "Claim winner error");
        require(thirdPrizeSupply > 0, "Third prize supply error");
        require(thirdPrizeClaim[tokenId] > 0, "Claim prize error");

        thirdPrizeClaim[tokenId] -= 1;
        thirdPrizeSupply -= 1;
        Address.sendValue(payable(msg.sender), thirdPrizeReward);
    }

    modifier noContract() {
        require(tx.origin == msg.sender);
        _;
    }

    function getTokenIdByRandomWord(uint256 _randomWord)
    internal
    view
    returns (uint256) {
        return (_randomWord % totalSupply()) + 1;
    }

    function getTokenIdsByRandomWords(uint256[] memory _randomWords)
    external
    view
    returns (uint256[] memory tokenIds){
        for(uint i = 0 ; i < _randomWords.length ; i++) {
            _randomWords[i] = getTokenIdByRandomWord(_randomWords[i]);
        }
        return _randomWords;
    }

    function setEncourageSupplyAndReward(uint256 _encourageSupply, uint256 _encourageReward)
    external
    onlyOwner {
        encourageSupply = _encourageSupply;
        encourageReward = _encourageReward;
    }

    /**
     * @dev With draw encourage encouragement award.
     * @param tokenId Encourage token id.
     */
    function withDrawEncourageReward(uint256 tokenId)
    external
    nonReentrant {
        require(encourageActive, "Encourage with draw error");
        require(encourageSupply > 0, "Encourage supply error");
        require(msg.sender == ownerOf(tokenId), "Claim owner error");
        require(!hasClaimReward[tokenId], "Claim reward error");

        hasClaimReward[tokenId] = true;
        encourageSupply -= 1;
        Address.sendValue(payable(msg.sender), encourageReward);
    }

}

