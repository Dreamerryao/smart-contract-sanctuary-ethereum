    **/
    struct UserInfo {
        uint256 xp;
        uint256 allocation;
        uint256 discountRatioPresale;
    }

    /**
     * @notice Info of each admin (Can setup communityAdmin)
     * `isAdmin` Boolean if it's admin
    **/
