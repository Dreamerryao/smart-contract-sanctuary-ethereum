import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "./interfaces/IWETH.sol";
import "./interfaces/IUniswapRouter.sol";

contract Uniswap {
    IUniswapRouter public immutable router;
    IWETH public immutable weth;

    constructor(IUniswapRouter _swapRouter, IWETH _weth) {
        router = _swapRouter;
        weth = _weth;
    }

    function swapExactInputSingleHop(
        address _tokenIn,
        address tokenOut,
        address recipient,
        uint24 poolFee,
        uint256 _amountIn
    ) external payable returns (uint256 amountOut) {
        address tokenIn;
        uint256 amountIn;
        require(tokenOut != address(0));
        if (msg.value > 0 && tokenIn == address(0)) {
            tokenIn = address(weth);
            amountIn = msg.value;
            weth.deposit{ value: amountIn }();
            weth.approve(address(router), amountIn);
        } else {
            tokenIn = _tokenIn;
            amountIn = _amountIn;
            IERC20(tokenIn).transferFrom(msg.sender, address(this), amountIn);
            IERC20(tokenIn).approve(address(router), amountIn);
        }

        IUniswapRouter.ExactInputSingleParams memory params = IUniswapRouter.ExactInputSingleParams({
            tokenIn: tokenIn,
            tokenOut: tokenOut,
            fee: poolFee,
            recipient: recipient,
            deadline: block.timestamp,
            amountIn: amountIn,
            amountOutMinimum: 0,
            sqrtPriceLimitX96: 0
        });
        amountOut = router.exactInputSingle(params);
    }
}

