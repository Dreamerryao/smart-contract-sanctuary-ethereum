pragma solidity ^0.8.15;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

import "./WhitelistERC20.sol";

contract DegenLabsWenMintCommunityRewards is
    Ownable,
    Pausable,
    ReentrancyGuard,
    WhitelistERC20
{
    using SafeERC20 for IERC20;

    uint256 public pricePerToken;
    address public wenmint;
    mapping(address => uint256) private claimed;

    constructor(address _wenmint, address _signatureChecker)
        WhitelistERC20(_signatureChecker)
    {
        wenmint = _wenmint;
    }

    function claim(
        uint256 nonce,
        uint256 amount,
        uint16 maxAmount,
        bytes memory signature
    ) external payable nonReentrant whenNotPaused {
        require(
            IERC20(wenmint).balanceOf(address(this)) >= 10**18 * amount,
            "NOT_ENOUGH_WENMINT_TOKENS_LEFT"
        );
        require(claimed[msg.sender] + amount <= maxAmount, "Over limit");

        _checkWhitelist(msg.sender, maxAmount, nonce, signature);

        IERC20(wenmint).safeTransfer(msg.sender, amount * 10**18);
    }

    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }

    function recoverERC20(address tokenAddress, uint256 tokenAmount)
        external
        onlyOwner
    {
        require(tokenAddress != wenmint, "CANT_MOVE_WM");
        IERC20(tokenAddress).safeTransfer(msg.sender, tokenAmount);
    }

    function withdrawLostETH() public onlyOwner {
        (bool success, ) = payable(msg.sender).call{
            value: address(this).balance
        }("");
        require(success);
    }
}

