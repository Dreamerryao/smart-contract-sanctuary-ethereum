pragma solidity ^0.8.17;

import "solmate-tokens/ERC721.sol";
import "chainlink/VRFConsumerBaseV2.sol";
import "chainlink/ConfirmedOwner.sol";
import "chainlink/interfaces/VRFCoordinatorV2Interface.sol";
import "opz/utils/Strings.sol";

uint32 constant callbackGasLimit = 300000;
uint8 constant rarities = 5;


contract Toaster is ERC721, VRFConsumerBaseV2, ConfirmedOwner {

    uint256 private immutable mintPrice;
    bytes32 private immutable keyHash;
    VRFCoordinatorV2Interface private immutable COORDINATOR;
    uint256 private immutable fee;
    uint64 private subId;
    uint256 public lastId = 0;
    mapping(uint256 => uint8) public rarity;
    struct RequestStatus {
        bool fulfilled; // whether the request has been successfully fulfilled
        bool exists; // whether a requestId exists
        uint256[] randomWords;
        address to; // the owner of the nft
    }
    mapping(uint256 => RequestStatus) private s_requests;
    string private cid;
    uint256 immutable private lower_percentage;
    mapping(uint256 => uint8) private createdChildrens;
    mapping(uint8 => uint8) private maxChildsForRarity;

    error RequestNotFound(uint256 reqId);
    error RequestAlreadyFulfilled(uint256 reqId);
    error InsufficientETH(uint256 given, uint256 required);
    error NotOwner(uint256 id);
    error CannotCreateChild(uint8 created, uint8 max);


    constructor(
        string memory _name, 
        string memory _symbol, 
        uint256 _mintPrice,
        address _coordinator,
        bytes32 _keyHash,
        uint256 _fee,
        uint64 _subId,
        string memory _cid
    ) ERC721(_name, _symbol) VRFConsumerBaseV2(_coordinator) ConfirmedOwner(msg.sender) {
        mintPrice=_mintPrice;
        COORDINATOR = VRFCoordinatorV2Interface(_coordinator);
        keyHash=_keyHash;
        fee=_fee;
        subId=_subId;
        cid=_cid;
        uint256 _lower_percentage=10000;
        for (uint8 i=1;i<rarities;i++) {
            _lower_percentage = _lower_percentage/2;
        }
        lower_percentage = _lower_percentage;
        maxChildsForRarity[0] = 0;
        maxChildsForRarity[1] = 1;
        maxChildsForRarity[2] = 2;
        maxChildsForRarity[3] = 4;
        maxChildsForRarity[4] = 8;
        maxChildsForRarity[5] = 16;
    }
    
    function getRandomRarity(address _to) internal returns(uint256) {
        uint256 reqId = COORDINATOR.requestRandomWords(keyHash, subId, 3, callbackGasLimit, 1);
        s_requests[reqId] = RequestStatus({
            exists: true,
            fulfilled: false,
            randomWords: new uint256[](0),
            to: _to
        });
        return reqId;
    }

    function fulfillRandomWords(uint256 requestId, uint256[] memory randomWords) internal override {
        if (!s_requests[requestId].exists) revert RequestNotFound(requestId);
        if (s_requests[requestId].fulfilled) revert RequestAlreadyFulfilled(requestId);
        s_requests[requestId].fulfilled = true;
        s_requests[requestId].randomWords = randomWords;
        _safeMint(s_requests[requestId].to, lastId);
        rarity[lastId] = getRarity(randomWords[0]);
        lastId=lastId+1;
        delete s_requests[requestId];
    }

    function getRarity(uint256 _random) internal pure returns(uint8) {
        uint256 _lowered = uint256(_random % 10000);
        if (_lowered <= 312) {
            return 5;
        }
        if (_lowered <= 937) {
            return 4;
        }
        if (_lowered <= 2187) {
            return 3;
        }
        if (_lowered <= 4687) {
            return 2;
        }
        if (_lowered <= 10000) {
            return 1;
        }
        return 0;
    }

    function mint(address _to) external payable returns(uint256){
        if(msg.value != mintPrice) revert InsufficientETH(msg.value, mintPrice);
        return getRandomRarity(_to);
    }

    function tokenURI(uint256 id) public view override returns (string memory) {
        return string(abi.encodePacked("ipfs://",cid,"/",Strings.toString(rarity[id]),".json"));
    }

    function createChild(uint256 _id, address _to) external {
        if (ownerOf(_id) != msg.sender) revert NotOwner(_id);
        if (createdChildrens[_id] >= maxChildsForRarity[rarity[_id]]) revert CannotCreateChild(createdChildrens[_id], maxChildsForRarity[rarity[_id]]);
        rarity[lastId] = 0;
        createdChildrens[_id] = createdChildrens[_id]+1;
        _safeMint(_to, lastId);
        lastId = lastId + 1;
    }

    function withdraw() onlyOwner external {
        payable(owner()).transfer(address(this).balance);
    }
}