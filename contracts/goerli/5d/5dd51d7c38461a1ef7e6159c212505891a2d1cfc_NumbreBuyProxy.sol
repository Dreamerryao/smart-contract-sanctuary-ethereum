pragma solidity ^0.8.0;

import "@openzeppelin/contracts-upgradeable/token/ERC721/ERC721Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/ERC1967/ERC1967UpgradeUpgradeable.sol";
import {Base64} from "../contracts/Base64.sol";
import "./INumbreERC721.sol";
import "./INumbreSeason.sol";
import "./INumbreBuyProxy.sol";

contract NumbreBuyProxy is INumbreBuyProxy, ERC1967UpgradeUpgradeable {

    address public owner;
    address public numbreERC721Address;
    address public numbreSeasonAddress;
    uint256 public soldEth;
    uint256 public soldMatic;
    mapping(address => bool) public adminMap;
    mapping(uint256 => mapping(address => uint256)) seasonUserCurNum;
    uint256 public seasonAddressLimit;
    uint256 public seasonLimit;
    uint256 public seasonCurNum;

    event BuyPieceByMatic(uint256 tokenId, uint256 value, address user, uint256 seasonId);
    event FreeMint(uint256 tokenId, address user, uint256 seasonId);

    modifier onlyOwner() {
        require(msg.sender == owner, "access deny");
        _;
    }

    modifier onlyAdmin() {
        require(adminMap[msg.sender], "access deny");
        _;
    }

    modifier onlySeason() {
        require(msg.sender == numbreSeasonAddress, "access deny");
        _;
    }

    function initialize() initializer public {
        owner = msg.sender;
    }

    function buyPieceByMatic() public payable {
        require(msg.value == soldMatic, "value not enough");
        require(userCanMint(msg.sender, 1) == 0, "cannot mint anymore");
        uint256 seasonId = getSeasonIdNotZero();
        INumbreERC721 iNumbreERC721 = INumbreERC721(numbreERC721Address);
        uint256 tokenId = iNumbreERC721.mint(msg.sender, seasonId);
        seasonUserCurNum[1][msg.sender] = seasonUserCurNum[1][msg.sender] + 1;
        seasonCurNum = seasonCurNum + 1;
        payable(address(numbreSeasonAddress)).transfer(soldMatic);
        emit BuyPieceByMatic(tokenId, soldMatic, msg.sender, seasonId);
    }

    function freeMint(address user) public onlyAdmin {
        uint256 seasonId = getSeasonIdNotZero();
        INumbreERC721 iNumbreERC721 = INumbreERC721(numbreERC721Address);
        uint256 tokenId = iNumbreERC721.mint(user, seasonId);
        seasonCurNum = seasonCurNum + 1;
        emit FreeMint(tokenId, msg.sender, seasonId);
    }

    function newSeason() external override onlySeason {
        seasonCurNum = 0;
    }

    function getSeasonIdNotZero() public view returns (uint256){
        INumbreSeason iNumbreSeason = INumbreSeason(numbreSeasonAddress);
        uint256 seasonId = iNumbreSeason.getSeasonId();
        require(seasonId != 0, "season id zero");
        return seasonId;
    }

    function userCanMint(address user, uint256 season) public view returns (uint256) {
        if (seasonCurNum + 1 >= seasonLimit) {
            return 1;
        }
        if (seasonAddressLimit != 0 && seasonUserCurNum[season][user] + 1 >= seasonAddressLimit) {
            return 2;
        }
        return 0;
    }

    function setSoldMatic(uint256 newSoldMatic) public onlyAdmin {
        soldMatic = newSoldMatic;
    }

    function setSeasonLimit(uint256 newSeasonLimit) public onlyAdmin {
        seasonLimit = newSeasonLimit;
    }

    function setNumbreERC721Address(address newAddress) public onlyAdmin {
        numbreERC721Address = newAddress;
    }

    function setNumbreSeasonAddress(address newAddress) public onlyAdmin {
        numbreSeasonAddress = newAddress;
    }

    function addAdmin(address admin) public onlyOwner {
        adminMap[admin] = true;
    }

    function delAdmin(address admin) public onlyOwner {
        adminMap[admin] = false;
    }
}

