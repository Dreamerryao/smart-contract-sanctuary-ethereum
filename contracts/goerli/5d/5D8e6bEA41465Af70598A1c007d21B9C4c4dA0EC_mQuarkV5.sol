      _tempData.minTokenId = _globalTokenIdVariable + 1;
      _globalTokenIdVariable = _globalTokenIdVariable + _amounts[i];
      _tempData.maxTokenId = _globalTokenIdVariable;
      _tempData.collectionIndex = _collecIndex;
      // _tempdata.isPurchasable = true;
