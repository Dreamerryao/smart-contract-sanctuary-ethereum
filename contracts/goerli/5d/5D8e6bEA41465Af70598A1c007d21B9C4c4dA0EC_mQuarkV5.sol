    uint256 _templateId = ++templateIdCounter;
    templateURI[_templateId] = _uri;
    templateIds.add(_templateId);

    emit TemplateCreated(_templateId, _uri);
  }

  /**
   *Creates new NFT Item Templates

   *@param _uris: Template URIs for the NFT
   */
  function createBatchTemplate(string[] calldata _uris) external onlyAdmin {
    require(_uris.length <= 100, "Invalid amount of template creation!");

    uint256 _templateId = templateIdCounter;

    for (uint256 i = 0; i < _uris.length; i++) {
      ++_templateId;
      templateURI[_templateId] = _uris[i];
      templateIds.add(_templateId);

      emit TemplateCreated(_templateId, _uris[i]);
    }
    templateIdCounter = _templateId;
  }

