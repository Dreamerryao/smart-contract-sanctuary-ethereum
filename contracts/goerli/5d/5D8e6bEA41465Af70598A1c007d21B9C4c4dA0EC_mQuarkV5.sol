   *@param _collectionIndex:
   */
  function mint(
    address _to,
    address _metaverse,
    uint256 _templateId,
    uint256 _collectionIndex
  ) external onlyAuthorizedContract {
    // require(templateIds.contains(_templateId), "Not a valid ID!");
    TemplateData memory _tempData = metaverseTemplates[_metaverse][_templateId][_collectionIndex];
    require(_tempData.minTokenId != 0, "Can't mint an unexisting token!");
    require(_tempData.mintCount <= _tempData.amount, "Can't mint anymore, please contact admins!");

    uint256 _tokenId = _tempData.minTokenId + _tempData.mintCount;
    _mint(_to, _tokenId);
    tokenIdURI[_tokenId] = templateURI[_templateId];
    ++metaverseTemplates[_metaverse][_templateId][_collectionIndex].mintCount;

    emit NFTMinted(_templateId, _tokenId, _to);
  }

