pragma solidity ^0.8.0;

import "@chainlink/contracts/src/v0.8/interfaces/AggregatorV3Interface.sol"; // yarn add --dev @chainlink/contracts

// when using chainlink, you cant use hardhat or local network or JVM. because the contract address giving priceFeed only exists on testnet/mainnets

// how to use chainlink locally?
// ------with MOCKS

//DONT hardcode priceFeed address + the address changes depending on the chain
// ------use constructor args

library PriceConverter {
    function getPrice(AggregatorV3Interface priceFeed)
        internal
        view
        returns (uint256)
    {
        (, int256 price, , , ) = priceFeed.latestRoundData();
        // price = 8 decimals
        return uint256(price * 1e10); // price * 10**10
    }

    function getConversionRate(
        uint256 ethAmount,
        AggregatorV3Interface priceFeed
    ) internal view returns (uint256) {
        uint256 ethPrice = getPrice(priceFeed);
        uint256 ethAmountInUsd = (ethAmount * ethPrice) / 1e18; // (18 dec * 18 dec) / 18 dec = 18 dec
        return ethAmountInUsd;
    }
}