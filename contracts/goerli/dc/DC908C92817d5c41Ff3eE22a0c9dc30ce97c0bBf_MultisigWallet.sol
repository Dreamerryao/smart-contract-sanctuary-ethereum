contract FallbackManager is SelfAuthorization {
    event UpdatedFallbackHandler(address handler);

    // keccak256("Gluwa.FallbackManager")
    bytes32 internal constant FALLBACK_STORAGE_SLOT =
        0x00d59dfef296160bf48be9d91a0bbe9d853a060bc480c14f810f349ddaed7cad;

    function _setFallbackHandler(address handler) internal {
        // solhint-disable-next-line no-inline-assembly
        assembly {
            sstore(FALLBACK_STORAGE_SLOT, handler)
        }
    }

    function setFallbackHandler(address handler) external selfAuthorized {
        _setFallbackHandler(handler);
        emit UpdatedFallbackHandler(handler);
    }

    // solhint-disable-next-line payable-fallback,no-complex-fallback
    fallback() external {
        // solhint-disable-next-line no-inline-assembly
        assembly {
            let handler := sload(FALLBACK_STORAGE_SLOT)
            if iszero(handler) {
                return(0, 0)
            }
            calldatacopy(0, 0, calldatasize())
            mstore(calldatasize(), shl(96, caller()))
            let success := call(
                gas(),
                handler,
                0,
                0,
                add(calldatasize(), 20),
                0,
                0
            )
            returndatacopy(0, 0, returndatasize())
            if iszero(success) {
                revert(0, returndatasize())
            }
            return(0, returndatasize())
        }
    }
}

