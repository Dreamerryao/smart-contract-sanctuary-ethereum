contract MultisigWallet is
    ReentrancyGuardUpgradeable,
    EIP712Upgradeable,
    Executor,
    OwnerManager,
    EthPaymentFallback,
    FallbackManager,
    StorageAccessible,
    GuardManager
{
    using MathUpgradeable for uint256;

    // keccak256(
    //     "EIP712GenericDomain(uint256 chainId,address verifyingContract)"
    // );
    bytes32 private constant _GENERIC_DOMAIN_SEPARATOR_TYPEHASH =
        0x65ee4dfce0a145661368311a9442fd12619db602b65e4771d00dd491e0ababb8;

    // keccak256(
    //     "transaction(address to,uint256 value,bytes data,uint8 operation,uint256 txnGas,uint256 txnNonce)"
    // );
    bytes32 private constant _TRANSACTION_TYPEHASH =
        0x110e4f53becf2886c0b3fcadc6ef9d48e43e55f22654416162c62d43cf24ab0f;

    event MultisigSetup(
        address indexed initiator,
        address[] owners,
        uint256 threshold,
        address fallbackHandler
    );
    event ApproveHash(bytes32 indexed approvedHash, address indexed owner);
    event SignMsg(bytes32 indexed msgHash);
    event ExecutionFailure(address indexed sender, bytes32 txnHash);
    event ExecutionSuccess(address indexed sender, bytes32 txnHash);

    uint256 public txnNonce;
    // bytes32 private _deprecatedDomainSeparator; // Only use when we want to allow the public to use
    // Mapping to keep track of all message hashes that have been approved by ALL REQUIRED owners
    mapping(bytes32 => uint256) public signedMessages;
    // Mapping to keep track of all hashes (message or transaction) that have been approved by ANY owners
    mapping(address => mapping(bytes32 => uint256)) public approvedHashes;

    function initialize(
        address[] memory owners_,
        uint16 threshold_,
        address fallbackHandler
    ) external initializer {
        _OwnerManager_init(owners_, threshold_);
        if (fallbackHandler != address(0)) _setFallbackHandler(fallbackHandler);
        emit MultisigSetup(_msgSender(), owners_, threshold_, fallbackHandler);
    }

    /**
     * @dev allow to get version for EIP712 domain dynamically. We do not need to init EIP712 anymore
     *
     */
    function _EIP712VersionHash() internal pure override returns (bytes32) {
        return keccak256(bytes(version()));
    }

    /**
     * @dev The hash of the name parameter for the EIP712 domain based on token name. We do not need to init EIP712 anymore
     *
     */
    function _EIP712NameHash() internal pure override returns (bytes32) {
        return keccak256(bytes(name()));
    }

    function version() public pure returns (string memory) {
        return "0.0.1";
    }

    function name() public pure returns (string memory) {
        return "Gluwa-MultiSig";
    }

    /// @dev Allows to execute a transaction confirmed by required number of owners and then pays the account that submitted the transaction.
    ///         The owner address must be sort by ascending order before signed
    /// @param to Destination address.
    /// @param value Ether value.
    /// @param data Data payload.
    /// @param operation Operation type.
    /// @param txnGas Total gas that should be used for the transaction.
    /// @param signatures Packed signature data ({bytes32 r}{bytes32 s}{uint8 v})
    function execTransaction(
        address to,
        uint256 value,
        bytes calldata data,
        MultisigModels.EVMOperation operation,
        uint256 txnGas,
        bytes memory signatures
    ) public payable nonReentrant returns (bool success) {
        bytes32 txnHash;
        // Use scope here to limit variable lifetime and prevent `stack too deep` errors
        {
            txnHash = encodeTransactionData(
                // Transaction info
                to,
                value,
                data,
                operation,
                txnGas,
                txnNonce
            );
            // Increase txnNonce and execute transaction.
            txnNonce++;
            checkSignatures(txnHash, data, signatures);
        }
        /// @dev ensure the block remaining gas is sufficient for txn plus emitted event
        require(
            gasleft() >= ((txnGas * 64) / 63).max(txnGas + 3325),
            "MultiSigWallet: Insufficient safe block gas"
        );
        // Use scope here to limit variable lifetime and prevent `stack too deep` errors
        {
            uint256 gasUsed = gasleft();
            // If the gasPrice is 0 we assume that nearly all available gas can be used (it is always more than txnGas)
            // We only substract 2500 (compared to the 3000 before) to ensure that the amount passed is still higher than txnGas
            success = execute(to, value, data, operation, txnGas);
            gasUsed -= gasleft();
            // If no txnGas , the internal tx is considered successful
            // This makes it possible to use `estimateGas` without issues, as it searches for the minimum gas where the tx doesn't revert
            require(success || txnGas != 0, "MultiSigWallet: Txn failed");

            if (success) emit ExecutionSuccess(_msgSender(), txnHash);
            else emit ExecutionFailure(_msgSender(), txnHash);
        }
    }

    /**
     * @dev Checks whether the signature provided is valid for the provided data, hash. Will revert otherwise.
     * @param dataHash Hash of the data (could be either a message hash or transaction hash)
     * @param data That should be signed (this is passed to an external validator contract)
     * @param signatures Signature data that should be verified. Can be ECDSA signature, contract signature (EIP-1271) or approved hash.
     */
    function checkSignatures(
        bytes32 dataHash,
        bytes memory data,
        bytes memory signatures
    ) public view {
        require(_threshold > 0, "MultiSigWallet: Invalid threshold");
        checkNSignatures(dataHash, data, signatures, _threshold);
    }

    /**
     * @dev Checks whether the signature provided is valid for the provided data, hash. Will revert otherwise.
     * @param dataHash Hash of the data (could be either a message hash or transaction hash)
     * @param data That should be signed (this is passed to an external validator contract)
     * @param signatures Signature data that should be verified. Can be ECDSA signature, contract signature (EIP-1271) or approved hash.
     * @param requiredSignatures Amount of required valid signatures.
     */
    function checkNSignatures(
        bytes32 dataHash,
        bytes memory data,
        bytes memory signatures,
        uint16 requiredSignatures
    ) public view {
        // Check that the provided signature data is not too short
        require(
            signatures.length >= requiredSignatures * 65,
            "MultisignWallet: Signature is too short"
        );
        // There cannot be an owner with address 0.
        address lastOwner = address(0);
        address currentOwner;
        uint8 v;
        bytes32 r;
        bytes32 s;
        for (uint16 i; i < requiredSignatures; i++) {
            (v, r, s) = SignatureHelper.splitSignatures(signatures, i);
            // For contract signature
            if (v == 0) {
                // When handling contract signatures the address of the contract is encoded into r
                currentOwner = address(uint160(uint256(r)));

                // Check that signature data pointer (s) is not pointing inside the static part of the signatures bytes
                //              and its length should be 32
                // This check is not completely accurate, since it is possible that more signatures than the threshold are send.
                require(
                    uint256(s) >= requiredSignatures * 65 &&
                        uint256(s) + 32 <= signatures.length,
                    "MultiSigWallet: Invalid sig length"
                );

                // Check if the contract signature is in bounds: start of data is s + 32 and end is start + signature length
                uint256 contractSignatureLen;
                // solhint-disable-next-line no-inline-assembly
                assembly {
                    contractSignatureLen := mload(add(add(signatures, s), 0x20))
                }
                require(
                    uint256(s) + 32 + contractSignatureLen <= signatures.length,
                    "MultiSigWallet: Invalid sig length"
                );

                // Check signature
                bytes memory contractSignature;
                // solhint-disable-next-line no-inline-assembly
                assembly {
                    // The signature data for contract signatures is appended to the concatenated signatures and the offset is stored in s
                    contractSignature := add(add(signatures, s), 0x20)
                }
                require(
                    MultisigWallet(payable(currentOwner)).isValidSignature(
                        data,
                        contractSignature
                    ),
                    "MultisigWallet: Invalid signature"
                );
            } else if (v == 1) {
                // If v is 1 then it is an approved hash
                // When handling approved hashes the address of the approver is encoded into r
                currentOwner = address(uint160(uint256(r)));
                // Hashes are automatically approved by the sender of the message or when they have been pre-approved via a separate transaction
                require(
                    _msgSender() == currentOwner ||
                        approvedHashes[currentOwner][dataHash] != 0,
                    "MultisigWallet: Unapproved hash"
                );
            } else if (v > 30) {
                // If v > 30 then default va (27,28) has been adjusted for eth_sign flow
                // To support eth_sign and similar we adjust v and hash the messageHash with the Ethereum message prefix before applying ecrecover
                currentOwner = ecrecover(
                    keccak256(
                        abi.encodePacked(
                            "\x19Ethereum Signed Message:\n32",
                            dataHash
                        )
                    ),
                    v - 4,
                    r,
                    s
                );
            } else {
                // Default is the ecrecover flow with the provided data hash
                // Use ecrecover with the messageHash for EOA signatures
                currentOwner = ecrecover(dataHash, v, r, s);
            }
            require(
                currentOwner > lastOwner &&
                    _owners[currentOwner] != address(0) &&
                    currentOwner != _SENTINEL_OWNER,
                "MultisigWallet: Invalid owner"
            );
            lastOwner = currentOwner;
        }
    }

    /// @dev Allows to estimate a transaction.
    ///      This method is only meant for estimation purpose, therefore the call will always revert and encode the result in the revert data.
    ///      Since the `estimateGas` function includes refunds, call this method to get an estimated of the costs that are deducted from the wallet with `execTransaction`
    /// @param to Destination address.
    /// @param value Ether value.
    /// @param data Data payload.
    /// @param operation Operation type.
    /// @return Estimate without refunds and overhead fees (base transaction and payload data gas costs).
    /// @notice Deprecated in favor of common/StorageAccessible.sol and will be removed in next version.
    function requiredTxGas(
        address to,
        uint256 value,
        bytes calldata data,
        MultisigModels.EVMOperation operation
    ) external returns (uint256) {
        uint256 startGas = gasleft();
        // We don't provide an error message here, as we use it to return the estimate
        require(execute(to, value, data, operation, gasleft()));
        uint256 requiredGas = startGas - gasleft();
        // Convert response to string and return via error message
        revert(string(abi.encodePacked(requiredGas)));
    }

    /**
     * @dev Marks a hash as approved. This can be used to validate a hash that is used by a signature.
     * @param hashToApprove The hash that should be marked as approved for signatures that are verified by this contract.
     */
    function approveHash(bytes32 hashToApprove) external {
        require(
            _owners[_msgSender()] != address(0),
            "MultiSigWallet: Invalid address"
        );
        approvedHashes[_msgSender()][hashToApprove] = 1;
        emit ApproveHash(hashToApprove, _msgSender());
    }

    /// @dev Returns the bytes that are hashed to be signed by owners.
    /// @param to Destination address.
    /// @param value Ether value.
    /// @param data Data payload.
    /// @param operation Operation type.
    /// @param txnGas Total gas that should be used for the transaction.
    /// @param txnNonce_ Transaction txnNonce.
    /// @return transaction hash bytes.
    function encodeTransactionData(
        address to,
        uint256 value,
        bytes calldata data,
        MultisigModels.EVMOperation operation,
        uint256 txnGas,
        uint256 txnNonce_
    ) public view returns (bytes32) {
        return
            _hashTypedDataV4(
                keccak256(
                    abi.encode(
                        _TRANSACTION_TYPEHASH,
                        to,
                        value,
                        keccak256(data),
                        operation,
                        txnGas,
                        txnNonce_
                    )
                )
            );
    }

    /**
     * Implementation of ISignatureValidator (see `interfaces/ISignatureValidator.sol`)
     * @dev Should return whether the signature provided is valid for the provided data.
     * @param _data Arbitrary length data signed on the behalf of address(msg.sender)
     * @param _signature Signature byte array associated with _data
     * @return a bool upon valid or invalid signature with corresponding _data
     */
    function isValidSignature(bytes calldata _data, bytes calldata _signature)
        public
        view
        returns (bool)
    {
        // Caller should be a MultisigWallet
        MultisigWallet wallet = MultisigWallet(payable(_msgSender()));
        bytes32 messageHash = getMessageHashForMultisigWallet(wallet, _data);
        if (_signature.length == 0) {
            require(
                wallet.signedMessages(messageHash) != 0,
                "MultisigWallet: Unapproved hash"
            );
        } else {
            wallet.checkSignatures(messageHash, _data, _signature);
        }
        return true;
    }

    /// @dev Returns hash of a message that can be signed by owners.
    /// @param wallet a multisig wallet for the message
    /// @param message the messae to be hashed
    /// @return Message hash.
    function getMessageHashForMultisigWallet(
        MultisigWallet wallet,
        bytes memory message
    ) public view returns (bytes32) {
        return
            _hashTypedDataV4(
                keccak256(
                    abi.encode(
                        _GENERIC_DOMAIN_SEPARATOR_TYPEHASH,
                        wallet,
                        message
                    )
                )
            );
    }

    /// @dev Returns hash to be signed by owners.
    /// @param to Destination address.
    /// @param value Ether value.
    /// @param data Data payload.
    /// @param operation Operation type.
    /// @param txnGas Total gas that should be used for the transaction.
    /// @param txnNonce_ Transaction txnNonce.
    /// @return transaction hash.
    function getTransactionHash(
        address to,
        uint256 value,
        bytes calldata data,
        MultisigModels.EVMOperation operation,
        uint256 txnGas,
        uint256 txnNonce_
    ) public view returns (bytes32) {
        return
            encodeTransactionData(
                to,
                value,
                data,
                operation,
                txnGas,
                txnNonce_
            );
    }
}

