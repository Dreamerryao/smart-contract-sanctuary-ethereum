import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";

import "./SelfAuthorization.sol";

contract OwnerManager is Initializable, SelfAuthorization {
    event AddedOwner(address indexed owner);
    event RemovedOwner(address indexed owner);
    event ChangedThreshold(uint256 indexed threshold);

    uint16 internal _threshold;
    uint16 internal _ownerCount;
    address internal constant _SENTINEL_OWNER = address(0x1);

    mapping(address => address) internal _owners;
    

    function _OwnerManager_init(address[] memory owners_, uint16 threshold_)
        internal
        onlyInitializing
    {
        require(
            threshold_ <= owners_.length && threshold_ >= 1,
            "OwnerManager: Invalid threshold"
        );
        address currentOwner = _SENTINEL_OWNER;
        address owner;
        for (uint256 i; i < owners_.length; i++) {
            // Owner address cannot be null.
            owner = owners_[i];
            require(
                owner != address(0) &&
                    owner != _SENTINEL_OWNER &&
                    owner != address(this) &&
                    currentOwner != owner,
                "OwnerManager: Invalid Address"
            );
            // No duplicate _owners allowed.
            require(
                _owners[owner] == address(0),
                "OwnerManager: Invalid Address"
            );
            _owners[currentOwner] = owner;
            currentOwner = owner;
        }
        _owners[currentOwner] = _SENTINEL_OWNER;
        _ownerCount = uint16(owners_.length);
        _threshold = threshold_;
    }


    /// @param owner New owner address.
    /// @param threshold_ New threshold.
    function addOwnerWithThreshold(address owner, uint16 threshold_)
        public
        selfAuthorized
    {
        require(
            owner != address(0) &&
                owner != _SENTINEL_OWNER &&
                owner != address(this),
            "OwnerManager: Invalid owner"
        );
        require(_owners[owner] == address(0), "OwnerManager: Duplicated owner");
        _owners[owner] = _owners[_SENTINEL_OWNER];
        _owners[_SENTINEL_OWNER] = owner;
        _ownerCount++;
        emit AddedOwner(owner);
        if (threshold_ != _threshold) changeThreshold(threshold_);
    }
    
    /// @notice Removes the owner `owner` and updates the threshold to `_threshold`.
    /// @param prevOwner Owner that pointed to the owner to be removed in the linked list
    /// @param removedOwner Owner address to be removed.
    /// @param threshold_ New threshold.
    function removeOwner(
        address prevOwner,
        address removedOwner,
        uint16 threshold_
    ) public selfAuthorized {
        // Only allow to remove an owner, if threshold can still be reached.
        require(
            _ownerCount - 1 >= _threshold,
            "OwnerManager: Threshold violated"
        );
        // Validate owner address and check that it corresponds to owner index.
        require(
            removedOwner != address(0) && removedOwner != _SENTINEL_OWNER,
            "OwnerManager: Invalid Owner"
