library SignatureHelper {
    function splitSignature(bytes memory signature)
        internal
        pure
        returns (
            uint8 v,
            bytes32 r,
            bytes32 s
        )
    {
        require(signature.length == 65, "Invalid signature length");

        // solhint-disable-next-line no-inline-assembly
        assembly {
            // first 32 bytes, after the length prefix
            r := mload(add(signature, 32))
            // second 32 bytes
            s := mload(add(signature, 64))
            // first byte of the remaining
            v := byte(0, mload(add(signature, 96)))
        }

        if (v == 1) {
            v = 28;
        }

        if (v != 27 && v != 28) {
            // signed by a contract
            v = 0;
        }
    }

    function splitSignatures(bytes memory signatures, uint256 position)
        internal
        pure
        returns (
            uint8 v,
            bytes32 r,
            bytes32 s
        )
    {
        // solhint-disable-next-line no-inline-assembly
        assembly {
            let signaturePos := mul(0x41, position)
            r := mload(add(signatures, add(signaturePos, 32)))
            s := mload(add(signatures, add(signaturePos, 64)))           
            v := and(mload(add(signatures, add(signaturePos, 65))), 255)
        }
    }
}

