pragma solidity 0.8.9;

contract SuperfluidPlugin is IPlugin, Ownable, SuperAppBase {
  using CFAv1Library for CFAv1Library.InitData;

  // events
  event TokenUpdated(address indexed token, uint256 pclass);
  event ReceiverUpdated(address receiver);

  // constants
  uint256 private constant MAX_TOKENS = 16;

  // members
  address public immutable superfluid;
  address public immutable membership;
  address public immutable tollbooth;
  address[] public tokens;
  mapping(address => uint256) public pclasses;
  address public receiver;
  mapping(address => address) public currentFeeReceivers;
  CFAv1Library.InitData lib;

  /**
   * @param superfluid_ address of superfluid host
   * @param tokens_ addresses of accepted super tokens
   * @param receiver_ address to route received funds
   * @param membership_ address of parent membership
   * @param tollbooth_ address to tollbooth protocol contract
   */
  constructor(
    address superfluid_,
    address[] memory tokens_,
    address receiver_,
    address membership_,
    address tollbooth_
  ) {
    require(superfluid_ != address(0));
    require(receiver_ != address(0));
    require(membership_ != address(0));
    require(tollbooth_ != address(0));
    require(!ISuperfluid(superfluid_).isApp(ISuperApp(receiver_)));

    superfluid = superfluid_;
    receiver = receiver_;
    membership = membership_;
    tollbooth = tollbooth_;

    for (uint256 i = 0; i < tokens_.length; i++) {
      require(tokens_[i] != address(0));
      tokens.push(tokens_[i]);
      pclasses[tokens_[i]] = i + 1;
    }

    // initialize cfa library
    lib = CFAv1Library.InitData(
      ISuperfluid(superfluid),
      IConstantFlowAgreementV1(
        address(
          ISuperfluid(superfluid).getAgreementClass(
            keccak256(
              "org.superfluid-finance.agreements.ConstantFlowAgreement.v1"
            )
          )
        )
      )
    );

    // register as super app
    uint256 configWord = SuperAppDefinitions.APP_LEVEL_FINAL |
      SuperAppDefinitions.BEFORE_AGREEMENT_CREATED_NOOP |
      SuperAppDefinitions.BEFORE_AGREEMENT_UPDATED_NOOP |
      SuperAppDefinitions.BEFORE_AGREEMENT_TERMINATED_NOOP;

    ISuperfluid(superfluid).registerApp(configWord);
  }

  /**
   * @inheritdoc IPlugin
   */
  function metadata(uint256 pclass) external view returns (string memory) {
    require(
      0 < pclass && pclass <= tokens.length,
      "SuperfluidPlugin: invalid class id"
    );
    return
      string(
        abi.encodePacked(
          "Superfluid plugin: ",
          ISuperToken(tokens[pclass - 1]).symbol()
        )
      );
  }

  /**
   * @inheritdoc IPlugin
   */
  function shares(address user, uint256 pclass)
    external
    view
    returns (uint256)
  {
    require(
      0 < pclass && pclass <= tokens.length,
      "SuperfluidPlugin: invalid class id"
    );

    // get user flow rate to plugin
    IConstantFlowAgreementV1 cfa = IConstantFlowAgreementV1(lib.cfa);
    (, int96 flow, , ) = cfa.getFlow(
      ISuperfluidToken(tokens[pclass - 1]),
      user,
      address(this)
    );
    return uint96(flow);
  }

  // ---------- Superfluid ----------

  modifier onlyHost() {
    require(msg.sender == superfluid, "SuperfluidPlugin: caller is not host");
    _;
  }

  function afterAgreementCreated(
    ISuperToken superToken,
    address agreementClass,
    bytes32, // agreementId
    bytes calldata agreementData,
    bytes calldata, // cbdata
    bytes calldata ctx
  ) external override onlyHost returns (bytes memory newCtx) {
    require(
      pclasses[address(superToken)] > 0,
      "SuperfluidPlugin: invalid token"
    );
    require(
      address(lib.cfa) == agreementClass,
      "SuperfluidPlugin: invalid agreement class"
    );
    return _update(superToken, agreementData, ctx);
  }

  function afterAgreementUpdated(
    ISuperToken superToken,
    address agreementClass,
    bytes32, // agreementId
    bytes calldata agreementData,
    bytes calldata, // cbdata
    bytes calldata ctx
  ) external override onlyHost returns (bytes memory newCtx) {
    require(
      pclasses[address(superToken)] > 0,
      "SuperfluidPlugin: invalid token"
    );
    require(
      address(lib.cfa) == agreementClass,
      "SuperfluidPlugin: invalid agreement class"
    );
    return _update(superToken, agreementData, ctx);
  }

  function afterAgreementTerminated(
    ISuperToken superToken,
    address agreementClass,
    bytes32, // agreementId
    bytes calldata agreementData,
    bytes calldata, // cbdata
    bytes calldata ctx
  ) external override onlyHost returns (bytes memory newCtx) {
    if (
      pclasses[address(superToken)] == 0 || address(lib.cfa) != agreementClass
    ) {
      return ctx; // cannot revert in this callback
    }
    return _update(superToken, agreementData, ctx);
  }

  // ---------- Superfluid plugin ----------

  /**
   * @param superToken super token for flow
   * @param ctx context data
   */
  function _update(
    ISuperToken superToken,
    bytes memory agreementData,
    bytes memory ctx
  ) private returns (bytes memory) {
    IConstantFlowAgreementV1 cfa = IConstantFlowAgreementV1(lib.cfa);

    // update parent membership
    (address user, ) = abi.decode(agreementData, (address, address));
    IMembership(membership).update(user);

    // get current fee fee
    address currentFeeReceiver = currentFeeReceivers[address(superToken)];
    int96 currentFee;
    if (currentFeeReceiver != address(0)) {
      (, currentFee, , ) = cfa.getFlow(
        superToken,
        address(this),
        currentFeeReceiver
      );
    }

    // compute cumulative flow in
    int96 flow;
    {
      int96 net = cfa.getNetFlow(superToken, address(this));
      (, int96 current, , ) = cfa.getFlow(superToken, address(this), receiver);
      flow = net + current + currentFee;
    }

    // get fee config from tollbooth
    uint256 feeAmount = ITollbooth(tollbooth).get(
      keccak256("passage.tollbooth.plugin.superfluid.feeAmount")
    );
    address feeReceiver = ITollbooth(tollbooth).getAddress(
      keccak256("passage.tollbooth.plugin.superfluid.feeReceiver")
    );

    // cleanup old fee flow if needed
    if (currentFee > 0) {
      if (feeAmount == 0 || currentFeeReceiver != feeReceiver) {
        ctx = lib.deleteFlowWithCtx(
          ctx,
          address(this),
          currentFeeReceiver,
          superToken
        );
      }
    }

    // update fee
    if (feeAmount > 0 && feeReceiver != address(0)) {
      int96 fee = int96(uint96((uint96(flow) * feeAmount) / 1e18));
      fee = _clip96x32(fee);
      flow -= fee;
      currentFeeReceivers[address(superToken)] = feeReceiver;
      ctx = lib.flowWithCtx(ctx, feeReceiver, superToken, fee);
    }

    // update receiver flow out
    return lib.flowWithCtx(ctx, receiver, superToken, flow);
  }

  /**
   * @notice add support for new super token
   * @dev note that tokens cannot be removed once added
   * @param token address of super token
   */
  function setToken(address token) external onlyOwner {
    require(token != address(0), "SuperfluidPlugin: token address is zero");
    require(tokens.length < MAX_TOKENS, "SuperfluidPlugin: exceeds max tokens");
    require(pclasses[(token)] == 0, "SuperfluidPlugin: token already used");
    tokens.push(token);
    uint256 pclass = tokens.length;
    pclasses[token] = pclass;
    emit TokenUpdated(token, pclass);
  }

  /**
   * @notice set new receiver for payment routing
   * @param receiver_ address of new receiver
   */
  function setReceiver(address receiver_) external onlyOwner {
    require(
      receiver_ != address(0),
      "SuperfluidPlugin: receiver address is zero"
    );
    require(
      !ISuperfluid(superfluid).isApp(ISuperApp(receiver_)),
      "SuperfluidPlugin: receiver address is a super app"
    );

    if (receiver_ == receiver) return;

    IConstantFlowAgreementV1 cfa = IConstantFlowAgreementV1(lib.cfa);

    for (uint256 i = 0; i < tokens.length; i++) {
      ISuperToken token = ISuperToken(tokens[i]);
      (, int96 flow, , ) = cfa.getFlow(token, address(this), receiver);
      if (flow == 0) continue;

      lib.deleteFlow(address(this), receiver, token);
      lib.createFlow(receiver_, token, flow);
    }

    receiver = receiver_;
    emit ReceiverUpdated(receiver);
  }

  /**
   * @notice internal helper to reduce the resolution of n to 64 bit, rounding down
   * @dev this avoids an internal clipping error in the superfluid framework
   * ref: https://github.com/ngmachado/ul-integration/blob/a6051881258cd528a3d264f2b9d5bc0fb3e61dac/contracts/AppLogic.sol#L186
   */
  function _clip96x32(int96 n) internal pure returns (int96 r) {
    // the right shift throws away the least significant 32 bit, then the left shift fills them with 0
    r = ((n >> 32) << 32);
  }
}

