error PublicClaimingNotAllowed();

// solhint-disable func-name-mixedcase
// solhint-disable ordering
contract ClaimNFT is IClaimNFT, MintNFT, ClaimNFTStorage {
    using MerkleProofUpgradeable for bytes32[];

    event MerkleRootChanged(bytes32 merkleRoot);
    event TokenClaimed(address indexed account, uint256 tokenId);
    event ClaimValueChanged(uint256 claimValue);
    event PublicClaimChanged(bool publicClaim);

    function __ClaimNFTContract_init(
        address aclContract,
        string memory name,
        string memory symbol,
        string memory baseUri,
        string memory collectionUri,
        uint256 maxTokenSupply,
        uint256 claimValue,
        bytes32 merkleRoot
    ) internal onlyInitializing {
        __BaseNFTContract_init(aclContract, name, symbol, baseUri, collectionUri);
        __MintNFTContract_init_unchained(maxTokenSupply);
        __ClaimNFTContract_init_unchained(claimValue, merkleRoot);
    }

    function __ClaimNFTContract_init_unchained(uint256 claimValue, bytes32 merkleRoot) internal onlyInitializing {
        _claimValue = claimValue;
        _merkleRoot = merkleRoot;
        _isPublicClaimAllowed = false;
    }

    function setMerkleRoot(bytes32 merkleRoot) external onlyOperator {
        _merkleRoot = merkleRoot;
        emit MerkleRootChanged(merkleRoot);
    }

    function togglePublicClaim() external onlyOperator {
        _isPublicClaimAllowed = !_isPublicClaimAllowed;
        emit PublicClaimChanged(_isPublicClaimAllowed);
    }

    function claim(
        address account,
        bytes32[] calldata proof,
        uint256 tokenCount,
        uint256 tokenId
    ) external payable {
        if (!_isAllowed(account, proof, tokenCount)) revert ClaimingNotAllowed();
        if (msg.value < _claimValue) revert InvalidClaimValue(msg.value);
        this.mint(account, tokenId);
        _claimedTokens[account] += 1;
        emit TokenClaimed(account, tokenId);
    }

    function claim(address account, uint256 tokenId) external payable {
        if (!_isPublicClaimAllowed) revert PublicClaimingNotAllowed();
        if (msg.value < _claimValue) revert InvalidClaimValue(msg.value);
        this.mint(account, tokenId);
    }

    function setClaimValue(uint256 claimValue) external onlyOperator {
        _claimValue = claimValue;
        emit ClaimValueChanged(claimValue);
    }

    function getClaimValue() external view returns (uint256) {
        return _claimValue;
    }

    function isClaimAllowed(
        address account,
        bytes32[] calldata proof,
        uint256 tokenCount
    ) external view returns (bool) {
        return _isAllowed(account, proof, tokenCount);
    }

    function getPublicClaimAllowed() external view returns (bool) {
        return _isPublicClaimAllowed;
    }

    function _isAllowed(
        address account,
        bytes32[] calldata proof,
        uint256 tokenCount
    ) internal view returns (bool) {
        if (_claimedTokens[account] == tokenCount) return false;

        bytes32 leaf = _getMerkleLeaf(account, tokenCount);

        return proof.verify(_merkleRoot, leaf);
    }

    function _getMerkleLeaf(address account, uint256 tokens) internal view returns (bytes32) {
        return keccak256(abi.encodePacked(block.chainid, address(this), account, tokens));
    }
}

