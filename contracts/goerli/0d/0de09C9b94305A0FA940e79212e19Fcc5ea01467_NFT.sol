import "./IStateNFT.sol";

import "@openzeppelin/contracts/utils/Strings.sol";

error LastStateReached(uint256 tokenId);

// solhint-disable func-name-mixedcase
// solhint-disable ordering
contract StateNFT is IStateNFT, BaseNFT, StateNFTStorage {
    event TokenStateSet(uint256 tokenId, TokenState state);
    event StatesChanged(string[] states);
    event PermanentURI(string _value, uint256 indexed _id);

    function __StateNFTContract_init(
        address aclContract,
        string memory name,
        string memory symbol,
        string memory baseUri,
        string memory collectionUri
    ) internal onlyInitializing {
        __BaseNFTContract_init(aclContract, name, symbol, baseUri, collectionUri);
        __StateNFTContract_init_unchained();
    }

    function __StateNFTContract_init_unchained() internal onlyInitializing {}

    function nextState(uint256 tokenId) external onlyOperator {
        _requireMinted(tokenId);
        if (_tokenStates[tokenId] == TokenState.Last) revert LastStateReached(tokenId);
        _tokenStates[tokenId] = TokenState(uint256(_tokenStates[tokenId]) + 1);
        emit TokenStateSet(tokenId, _tokenStates[tokenId]);

        // This tells openSea that the URI will no longer change
        if (_tokenStates[tokenId] == TokenState.Last) emit PermanentURI(tokenURI(tokenId), tokenId);
    }

    function tokenURI(uint256 tokenId) public view virtual override(ERC721Upgradeable) returns (string memory) {
        _requireMinted(tokenId);
        string memory baseURI = _baseURI();
        if (bytes(baseURI).length == 0) return "";
        string memory state = Strings.toString(uint256(_tokenStates[tokenId]));
        return string(abi.encodePacked(baseURI, Strings.toString(tokenId), "/", state));
    }
}

