import "./interfaces/IXPair.sol";
import "./interfaces/IERC20Details.sol";
import "./interfaces/IXPairFactory.sol";

contract XPairFactory is IXPairFactory, Ownable {
    uint256 public constant VERSION = 0x1;

    address public immutable beacon;

    address public immutable configurator;

    address[] public allPairs;

    constructor(address _beacon, address _configurator) Ownable() {
        require(_beacon != address(0), "inv_o");
        require(_configurator != address(0), "inv_c");

        beacon = _beacon;
        configurator = _configurator;
    }


    /// @inheritdoc IXPairFactory
    function createXPair(
        IERC20Details _collateralAsset,
        uint64 _interestPerSecond,
        uint128 _collateralFactorPercent,
        uint128 _borrowFeePercent,
        uint128 _liquidationFeePercent
    ) external override onlyOwner returns (IXPair pair) {
        require(address(_collateralAsset) != address(0), "IVC");
        require(_liquidationFeePercent >= 1, "INLP");

        require(_interestPerSecond != 0, "INV_I");
        require(_collateralFactorPercent != 0, "INV_C");

        // 18 - decimals / 1
        uint128 decimals = 18 - _collateralAsset.decimals();
        if (decimals == 0) decimals = 1;

        // deploy new beacon proxy and initialize
        BeaconProxy proxy = new BeaconProxy(beacon, "");

        pair = IXPair(address(proxy));

        pair.initialize(
            IERC20(address(_collateralAsset)),
            decimals,
            _liquidationFeePercent,
            _interestPerSecond,
            _collateralFactorPercent,
            configurator,
            _borrowFeePercent
        );

        allPairs.push(address(pair));

        emit NewXPair(address(pair));
    }
}

