    // signer expiry
    uint256 internal signerExpiry;

    // ========== Custom Errors ===========
    error SafeGuard__onlySafeOwner();
    error SafeGuard__checkLocked_noTransfer();
    error SafeGuard__checkLocked_noApproval();
    error SafeGuard__checkSigner_rented();
    error SafeGuard__checkApproveForAll_noApprovalForAll();
    error SafeGuard__checkConfiguration_ownershipChangesNotAllowed();
    error SafeGuard__checkConfiguration_guardChangeNotAllowed();

    modifier onlySafeOwner() {
        if (safeOwner != msg.sender) revert SafeGuard__onlySafeOwner();
        _;
