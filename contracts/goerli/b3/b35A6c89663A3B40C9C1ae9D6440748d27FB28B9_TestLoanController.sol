pragma solidity 0.8.13;

import { IGnosisSafe } from "./interfaces/IGnosisSafe.sol";
import { SafeGuard } from "./SafeGuard.sol";
import { RentalsRecipes } from "./RentalsRecipes.sol";

import { ECDSA } from "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import { IERC721 } from "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import { Initializable } from "@openzeppelin/contracts/proxy/utils/Initializable.sol";
import { BeaconProxy } from "@openzeppelin/contracts/proxy/beacon/BeaconProxy.sol";

import { Enum } from "@gnosis.pm/safe-contracts/contracts/common/Enum.sol";
import { ISignatureValidator } from "@gnosis.pm/safe-contracts/contracts/interfaces/ISignatureValidator.sol";
import { GnosisSafe } from "@gnosis.pm/safe-contracts/contracts/GnosisSafe.sol";

// import "forge-std/Test.sol";

contract SafeOwner is ISignatureValidator, Initializable {
    bytes32 public constant GUARD_STORAGE_SLOT = 0x4a204f620c8c5ccdca3fd54d003badd85ba500436a431f0cbda4f558c93c34c8;

    struct Rent {
        address renter;
        uint256 from;
        uint256 to;
    }

    address public safe;
    address public owner;
    address public factory;
    address public rentController;
    address public loanController;
    SafeGuard public guard;
    RentalsRecipes public recipes;

    bool internal isExecuting;
    bytes32 internal currentTxHash;

    // nft => id => Rent
    mapping(address => mapping(uint256 => Rent)) public rents;

    Rent public signerRent;

    // ========== Events ===========
    event RentedNft(address indexed nft, uint256 indexed id, uint256 from, uint256 to, address indexed renter);
    event RentedSigner(uint256 from, uint256 to, address indexed renter);
    event LockedNft(address indexed nft, uint256 indexed id);
    event UnlockedNft(address indexed nft, uint256 indexed id);
    event ClaimedNft(address indexed nft, uint256 indexed id, address indexed receiver);

    // ========== Custom Errors ===========
    error SafeOwner__onlyOwner();
    error SafeOwner__onlyRentController();
    error SafeOwner__onlyLoanController();
    error SafeOwner__onlyFactory();
    error SafeOwner__configuredGuard();
    error SafeOwner__rentNft_nftNotOwned();
    error SafeOwner__rentNft_nftApproved();
    error SafeOwner__rentNft_currentlyRented();
    error SafeOwner__rentNft_invalidRenter();
    error SafeOwner__rentNft_invalidDuration();
    error SafeOwner__rentNft_arityMismatch();
    error SafeOwner__isValidSignature_notRented();
    error SafeOwner__isValidSignature_invalidSigner();
    error SafeOwner__isValidSignature_noSignatureAllowed();
    error SafeOwner__isValidSignature_invalidExecSig();
    error SafeOwner__execTransaction_notRented();
    error SafeOwner__execTransaction_invalidRenter();
    error SafeOwner__execTransaction_notAllowedFunction();
    error SafeOwner__execTransaction_notSuccess();
    error SafeOwner__lockNft_nftNotOwned();
    error SafeOwner__lockNft_nftApproved();
    error SafeOwner__unlockNft_nftNotOwned();
    error SafeOwner__claimNft_nftNotOwned();
    error SafeOwner__claimNft_nftNotLocked();
    error SafeOwner__claimNft_notSuccess();
    error SafeOwner__rentSigner_currentlyRented();
    error SafeOwner__rentSigner_invalidRenter();
    error SafeOwner__rentSigner_invalidDuration();
    error SafeOwner__checkGuardConfigured_noGuard();

    modifier onlyOwner() {
        if (owner != msg.sender) revert SafeOwner__onlyOwner();
        _;
    }

    modifier onlyRentController() {
        if (rentController != msg.sender) revert SafeOwner__onlyRentController();
        _;
    }

    modifier onlyLoanController() {
        if (loanController != msg.sender) revert SafeOwner__onlyLoanController();
        _;
    }

    constructor() {
        _disableInitializers();
    }

    function initialize(
        address _guardBeacon,
        address _recipes,
        address _safe,
        address _owner,
        address _rentController,
        address _loanController
    ) public initializer {
        // TODO - validate addresses
        safe = _safe;
        owner = _owner;
        rentController = _rentController;
        loanController = _loanController;
        recipes = RentalsRecipes(_recipes);

        address guardProxy = address(
            new BeaconProxy(_guardBeacon, abi.encodeWithSelector(SafeGuard.initialize.selector, address(this)))
        );
        guard = SafeGuard(guardProxy);

        _setupGuard(_safe, guard);
    }

    function rentNft(
        address _nft,
        uint256 _id,
        address _renter,
        uint256 _duration
    ) external onlyRentController {
        _checkGuardConfigured();
        // safe should be owner
        if (IERC721(_nft).ownerOf(_id) != safe) revert SafeOwner__rentNft_nftNotOwned();
        if (IERC721(_nft).getApproved(_id) != address(0)) revert SafeOwner__rentNft_nftApproved();
        // TODO - it could also be approved for all

        if (_isRenting(rents[_nft][_id])) revert SafeOwner__rentNft_currentlyRented();
        if (_renter == address(0)) revert SafeOwner__rentNft_invalidRenter();
        if (_duration == 0) revert SafeOwner__rentNft_invalidDuration();

        Rent storage newRent = rents[_nft][_id];
        newRent.renter = _renter;
        newRent.from = block.timestamp;
        newRent.to = block.timestamp + _duration;

        emit RentedNft(_nft, _id, newRent.from, newRent.to, _renter);

        guard.setRentedAsset(_nft, _id, newRent.to);
    }

    function rentSigner(address _renter, uint256 _duration) external onlyRentController {
        _checkGuardConfigured();
        if (_isRenting(signerRent)) revert SafeOwner__rentSigner_currentlyRented();
        if (_renter == address(0)) revert SafeOwner__rentSigner_invalidRenter();
        if (_duration == 0) revert SafeOwner__rentSigner_invalidDuration();

        Rent memory newSigner = Rent(_renter, block.timestamp, block.timestamp + _duration);

        signerRent = newSigner;

        emit RentedSigner(newSigner.from, newSigner.to, _renter);

        guard.setSignerExpiry(newSigner.to);
    }

    function execTransaction(
        address _nft,
        uint256 _id,
        address to,
        uint256 value,
        bytes calldata data,
        uint256 safeTxGas,
        uint256 baseGas,
        uint256 gasPrice,
        address gasToken,
        address payable refundReceiver
    ) external returns (bool success) {
        Rent storage rent = rents[_nft][_id];
        if (!_isRenting(rent)) revert SafeOwner__execTransaction_notRented();
        if (rent.renter != msg.sender) revert SafeOwner__execTransaction_invalidRenter();
        if (!isAllowedFunction(_nft, to, _getSelector(data))) revert SafeOwner__execTransaction_notAllowedFunction();

        isExecuting = true;
        currentTxHash = IGnosisSafe(payable(safe)).getTransactionHash(
            // Transaction info
            to,
            value,
            data,
            Enum.Operation.Call,
            safeTxGas,
            // Payment info
            baseGas,
            gasPrice,
            gasToken,
            refundReceiver,
            // Signature info
            IGnosisSafe(payable(safe)).nonce()
        );

        // https://docs.gnosis-safe.io/contracts/signatures#contract-signature-eip-1271
        bytes memory signature = abi.encodePacked(
            abi.encode(address(this)), // r
            abi.encode(uint256(65)), // s
            bytes1(0), // v
            abi.encode(currentTxHash.length),
            currentTxHash
        );

        (success) = IGnosisSafe(safe).execTransaction(
            to,
            value,
            data,
            Enum.Operation.Call,
            safeTxGas,
            baseGas,
            gasPrice,
            gasToken,
            refundReceiver,
            signature
        );

        isExecuting = false;
        currentTxHash = bytes32(0);

        if (!success) revert SafeOwner__execTransaction_notSuccess();
    }

    function isValidSignature(bytes calldata _data, bytes calldata _signature) public view override returns (bytes4) {
        if (!isExecuting) {
            address signer = ECDSA.recover(ECDSA.toEthSignedMessageHash(_data), _signature);
            if (!_isRenting(signerRent)) revert SafeOwner__isValidSignature_notRented();
            if (signerRent.renter != signer) revert SafeOwner__isValidSignature_invalidSigner();
        } else {
            bytes32 txHash = abi.decode(_signature, (bytes32));
            if (txHash != currentTxHash) revert SafeOwner__isValidSignature_invalidExecSig();
        }

        return EIP1271_MAGIC_VALUE;
    }

    function isAllowedFunction(
        address _nft,
        address _contract,
        bytes4 _selector
    ) public view returns (bool) {
        return recipes.isAllowedFunction(_nft, _contract, _selector);
    }

    function lockLoanedNft(address _nft, uint256 _id) external onlyLoanController {
        // safe should be owner
        if (IERC721(_nft).ownerOf(_id) != safe) revert SafeOwner__lockNft_nftNotOwned();
        // should not be approved for someone else
        if (IERC721(_nft).getApproved(_id) != address(0)) revert SafeOwner__lockNft_nftApproved();

        emit LockedNft(_nft, _id);

        guard.setLoanedAsset(_nft, _id, true);
    }

    function unlockLoanedNft(address _nft, uint256 _id) external onlyLoanController {
        // safe should be owner
        if (IERC721(_nft).ownerOf(_id) != safe) revert SafeOwner__unlockNft_nftNotOwned();

        emit UnlockedNft(_nft, _id);

        guard.setLoanedAsset(_nft, _id, false);
    }

    function claimNft(
        address _nft,
        uint256 _id,
        address _receiver
    ) external onlyLoanController {
        // safe should be owner
        if (IERC721(_nft).ownerOf(_id) != safe) revert SafeOwner__claimNft_nftNotOwned();
        if (!guard.isLocked(_nft, _id)) revert SafeOwner__claimNft_nftNotLocked();

        guard.setLoanedAsset(_nft, _id, false);

        bytes memory payload = abi.encodeWithSelector(IERC721.transferFrom.selector, safe, _receiver, _id);

        isExecuting = true;
        currentTxHash = IGnosisSafe(payable(safe)).getTransactionHash(
            _nft,
            0,
            payload,
            Enum.Operation.Call,
            0,
            0,
            0,
            address(0),
            payable(0),
            IGnosisSafe(payable(safe)).nonce()
        );

        // https://docs.gnosis-safe.io/contracts/signatures#contract-signature-eip-1271
        bytes memory signature = abi.encodePacked(
            abi.encode(address(this)), // r
            abi.encode(uint256(65)), // s
            bytes1(0), // v
            abi.encode(currentTxHash.length),
            currentTxHash
        );

        bool success = IGnosisSafe(safe).execTransaction(
            _nft,
            0,
            payload,
            Enum.Operation.Call,
            0,
            0,
            0,
            address(0),
            payable(0),
            signature
        );

        isExecuting = false;
        currentTxHash = bytes32(0);

        if (!success) revert SafeOwner__claimNft_notSuccess();

        emit ClaimedNft(_nft, _id, _receiver);
    }

    function _getSelector(bytes memory _data) internal pure returns (bytes4 selector) {
        // solhint-disable-next-line no-inline-assembly
        assembly {
            selector := mload(add(_data, 32))
        }
    }

    function _isRenting(Rent storage rent) internal view returns (bool) {
        return (rent.from <= block.timestamp && block.timestamp <= rent.to);
    }

    function _getAllowedFunctionsKey(Rent storage rent) internal view returns (bytes32) {
        return keccak256(abi.encodePacked(rent.renter, rent.from, rent.to));
    }

    function _checkGuardConfigured() internal view {
        bytes memory storageAt = GnosisSafe(payable(safe)).getStorageAt(uint256(GUARD_STORAGE_SLOT), 1);
        address configuredGuard = abi.decode(storageAt, (address));
        if (configuredGuard != address(guard)) revert SafeOwner__checkGuardConfigured_noGuard();
    }

    function _setupGuard(address _safe, SafeGuard _guard) internal {
        // this requires this address to be a owner of the safe already
        isExecuting = true;
        bytes memory payload = abi.encodeWithSelector(IGnosisSafe.setGuard.selector, _guard);
        currentTxHash = IGnosisSafe(payable(_safe)).getTransactionHash(
            // Transaction info
            safe,
            0,
            payload,
            Enum.Operation.Call,
            0,
            // Payment info
            0,
            0,
            address(0),
            payable(0),
            // Signature info
            IGnosisSafe(payable(_safe)).nonce()
        );

        // https://docs.gnosis-safe.io/contracts/signatures#contract-signature-eip-1271
        bytes memory signature = abi.encodePacked(
            abi.encode(address(this)), // r
            abi.encode(uint256(65)), // s
            bytes1(0), // v
            abi.encode(currentTxHash.length),
            currentTxHash
        );

        IGnosisSafe(_safe).execTransaction(
            safe,
            0,
            payload,
            Enum.Operation.Call,
            0,
            0,
            0,
            address(0),
            payable(0),
            signature
        );

        isExecuting = false;
        currentTxHash = bytes32(0);
    }
}

