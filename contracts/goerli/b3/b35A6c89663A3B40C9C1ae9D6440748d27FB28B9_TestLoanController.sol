        safeOwner = _safeOwner;
    }

    function setSignerExpiry(uint256 _expiry) external onlySafeOwner {
        signerExpiry = _expiry;
    }

    function setRentedAsset(
        address _asset,
        uint256 _id,
        uint256 _to
    ) external onlySafeOwner {
        checkAsset[_asset] = true;
        rentedAssets[_asset][_id] = _to;

        if (_to > lastExpiry) {
            lastExpiry = _to;
        }
    }

    function setLoanedAsset(
        address _asset,
        uint256 _id,
        bool _loaned
    ) external onlySafeOwner {
        checkAsset[_asset] = true;
        if (_loaned) {
            loanedAssets.add(keccak256(abi.encodePacked(_asset, _id)));
        } else {
            loanedAssets.remove(keccak256(abi.encodePacked(_asset, _id)));
