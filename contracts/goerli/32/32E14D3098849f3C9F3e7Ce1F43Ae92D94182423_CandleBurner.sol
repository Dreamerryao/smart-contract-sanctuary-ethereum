pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/Ownable.sol";
import "./interfaces/ICandle.sol";

struct ConfessInfo {
    bytes32 ipfs;
    uint256 amount;
}

/// @custom:security-contact [emailÂ protected]
contract CandleBurner is Ownable {
    enum BurnStatus {
        Fail,
        Success
    }

    ICandle candle;

    /** @dev IPFS hashes for confess messages */
    mapping(address => ConfessInfo[]) private confessInfo;

    event Burn(address _from, BurnStatus _status);

    receive() external payable {}

    constructor(ICandle _candle) {
        require(
            address(_candle) != address(0),
            "CandleBurner: invalid CNDL address"
        );
        candle = _candle;
    }

    function burn(bytes32 _messageHash, uint256 amount) external {
        try candle.burn(msg.sender, amount) {
            confessInfo[msg.sender].push(ConfessInfo(_messageHash, amount));

            emit Burn(msg.sender, BurnStatus.Success);
        } catch {
            emit Burn(msg.sender, BurnStatus.Fail);
        }
    }

    function getConfessInfo(address _user)
        external
        view
        returns (ConfessInfo[] memory)
    {
        return confessInfo[_user];
    }
}

