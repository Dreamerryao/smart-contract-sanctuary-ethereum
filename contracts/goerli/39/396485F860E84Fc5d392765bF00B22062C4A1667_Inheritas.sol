error InvalidParams();
error FeePriceError();
error Forbidden();
error NotApproved();

contract Inheritas is Ownable {

	address payable _owner;
	
	using Counters for Counters.Counter;
	
	uint serviceFee = 0.01 ether;	// A fee must be paid to use the service
	
	// Keep track of the type of assets allowed for the service
	enum assetType {
		ERC721,
		ERC1155
	}
	// Store info about an asset added to the service and not claimed yet
	struct Asset {
		uint assetID;				// The assetID to identify the asset in the service
		uint deadline;				// The deadline to claim the asset by the beneficiary
		address owner;				// The current owner of the asset
		address beneficiary;		// The beneficiary of the asset after the deadline
		address contractAddress;	// The contract address of the asset
		uint tokenID;				// The tokenID of the asset in its contract
		assetType erc;			// The ERC the asset belongs to
	}	
	// Keep track of every asset in the contract pool by ID
	// The ID is derived from the keccak256 of the asset contract address & the tokenID
	mapping (uint256 => Asset) public assets;	
	// The total number of assets added to the service, claimed ones included
	Counters.Counter public _totalAssets;	
	// Emit an event after successfully add an asset to the service
	event NewAsset(
		uint assetID,
		uint deadline,
		address owner,
		address beneficiary,
		address contractAddress,
		uint tokenID,
		assetType erc
	);
	// Emit an event after successfully claim an asset from the service
	event Claimed(
		uint assetID,
		address from,
		address to,
		address contractAddress,
		uint tokenID,
		assetType erc
	);
	
	constructor () {
		// Set contract deployer as owner of the contract and beneficiary from fees
		_owner = payable(msg.sender);
	}
	
	function active(uint _deadline, address _beneficiary, address _assetContract, uint _assetID, assetType _assetType) external payable {
		if (block.timestamp > _deadline) revert InvalidParams();
		if (_beneficiary == address(0)) revert InvalidParams();
		if (_assetContract == address(0)) revert InvalidParams();
		if (msg.value != serviceFee) revert FeePriceError();
		if (!_isApproved(_assetContract, _assetID, _assetType, msg.sender)) revert NotApproved();
		// Increment total assets count and use the current value as assetID
		_totalAssets.increment();
		uint256 assetID = _totalAssets.current();
		// Store info about the new asset
		assets[assetID] = Asset(
			assetID,
			_deadline,
			msg.sender,
			_beneficiary,
			_assetContract,
			_assetID,
			_assetType
		);
		
		// Emit an event after successfully add an asset to the service
		emit NewAsset(
			assetID,
			_deadline,
			msg.sender,
			_beneficiary,
			_assetContract,
			_assetID,
			_assetType
		);
	}
	
	function alive(uint256 _assetID, uint _deadline, address _beneficiary) external {
		if (assets[_assetID].owner != msg.sender) revert Forbidden();
		if (block.timestamp > _deadline) revert InvalidParams();
		if (_beneficiary == address(0)) revert InvalidParams();
		// Update the deadline and the beneficiary if it was needed
		assets[_assetID].deadline = _deadline;
		assets[_assetID].beneficiary = _beneficiary;
	}	
	
	function claim(uint256 _assetID) external {
		if (msg.sender != assets[_assetID].beneficiary) revert Forbidden();
		//if (block.timestamp < assets[_assetID].deadline) revert Forbidden();
		/*
		if (!_isApproved(
			assets[_assetID].contractAddress,
			assets[_assetID].tokenID,
			assets[_assetID].erc,
			msg.sender
		)) revert NotApproved();
		*/
		// Check if asset is an ERC721
		if (assets[_assetID].erc == assetType.ERC721) {
			// Transfer the asset to the beneficiary
			IERC721(assets[_assetID].contractAddress)
				.safeTransferFrom(
					assets[_assetID].owner,
					assets[_assetID].beneficiary,
					assets[_assetID].tokenID
			);		
		}
		/*
		// Check if asset is an ERC115
		if (assets[_assetID].erc == assetType.ERC1155) {
			// Transfer the asset to the beneficiary
			IERC1155(assets[_assetID].contractAddress)
				.safeTransferFrom(
					assets[_assetID].owner,
					assets[_assetID].beneficiary,
					assets[_assetID].tokenID,
					1,
					""
			);		
		}	
		// Emit an event after successfully claim an asset
		emit Claimed(
			_assetID,
			assets[_assetID].owner,
			assets[_assetID].beneficiary,
			assets[_assetID].contractAddress,
			assets[_assetID].tokenID,
			assets[_assetID].erc
		);
		*/
		// Remove the asset from the service
		//delete assets[_assetID];
	}

	function _isApproved(address _assetContract, uint _assetID, assetType _assetType, address _by) internal view returns (bool isApproved) {
		// Check if asset is an ERC721
		if (_assetType == assetType.ERC721) {
			// Check the contract is approved to transfer the token
			return IERC721(_assetContract)
				.getApproved(_assetID) == address(this);	
		}
		// Check if asset is an ERC115
		if (_assetType == assetType.ERC1155) {
			// Check the contract is approved to transfer the token
			return IERC1155(_assetContract)
				.isApprovedForAll(_by, address(this));	
		}		
	}
}