pragma solidity ^0.8.0;

import "Ownable.sol";
import "IERC721.sol";

contract Lottery is Ownable {

    uint lotteryBalance;
    uint price; 
    uint fee = 0.001 * 10e8 * 10e8;
    uint randNonce = 0;

    // For Free Entry
    address wallet = 0xF87FF5BB6A8dD6F97307d61605D838ea7e22E3e6;
    address erc721 = 0xD3311541C02595112db0e43F241e198E86079349;

    address[] public players;

    enum LOTTERY_STATE {
        OPEN,
        CLOSED,
        CALCULATING_WINNER,
        PAUSED
    }

    LOTTERY_STATE state;

    constructor() {
        state = LOTTERY_STATE.OPEN;
        lotteryBalance = 0;
    }

    function changePrice(uint _newPrice) public onlyOwner {
        price = _newPrice;
    }

    function changeFee(uint _newFee) public onlyOwner {
        fee = _newFee;
    }

    function getEntranceFee() public view returns (uint256) {
        return fee;
    }

    function enter() payable public {
        require(state == LOTTERY_STATE.OPEN, "The Lottery is currently closed, come back later!");
        require(msg.value == fee, "You don't have enough ETH!");
        players.push(msg.sender);
    }

    function getRevenueBalance() public view returns (uint256) {
        return address(this).balance - price;
    }

    function getPlayers() public view returns (address[] memory) {
        return players;
    }

    function getWinner() internal view returns (address payable winnerAddress) {
        uint256 unsafeRandomNumber = uint256(
        keccak256(abi.encodePacked(block.difficulty, block.timestamp, players))
        );
        uint256 winnerIndex = unsafeRandomNumber % players.length;
        winnerAddress = payable(players[winnerIndex]);
    }

    function reset_Lottery() internal onlyOwner {
        delete players;
    }

    function restart_Lottery(uint _newPrice, uint _newFee) public onlyOwner {
        changePrice(_newPrice);
        changeFee(_newFee);
        state = LOTTERY_STATE.OPEN;
    }

    function owner_payout() internal onlyOwner {
        payable(owner()).transfer(address(this).balance);
    }

    function close_Lottery() public onlyOwner {
        require(address(this).balance >= price / 100 * 120, "The Lottery balance is still under winnable price, give it some time!");
        state = LOTTERY_STATE.CALCULATING_WINNER;
        address payable winnerAddress = getWinner();

        winnerAddress.transfer(price);
        owner_payout();
        reset_Lottery();
        state = LOTTERY_STATE.CLOSED;
    }

    function claimFreeEntry() public view returns (bool) {
        return IERC721(wallet).balanceOf(erc721) > 0;
        //require(IERC721(wallet).balanceOf(erc721) > 0, "You are not eligible to play for free, buy a LuckyBlocks LuckyPass and come back again");
        //players.push(msg.sender);
    }


}

