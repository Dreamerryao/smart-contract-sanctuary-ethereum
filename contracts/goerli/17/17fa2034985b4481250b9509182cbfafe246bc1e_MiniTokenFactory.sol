contract MiniTokenFactory is ERC1155, ReentrancyGuard, Owned {
    error Unauthorized();
    error AlreadyMinted();
    error NotFound();
    error InsufficientEth();

    event AddToken(uint256 tokenId);
    event SetMintPrice(uint256 mintPrice, uint256 tokenId);

    struct MiniToken {
        string uri;
        mapping(uint256 => bool) minted;
        ERC721 original;
        uint96 mintPrice;
    }
    mapping(uint256 => MiniToken) tokens;

    constructor() Owned(msg.sender) {}

    function uri(uint256 id)
        public
        view
        virtual
        override
        returns (string memory)
    {
        return tokens[id].uri;
    }

    //////
    /// Minting & Burning

    function mint(uint256 tokenId, uint256 originalId)
        external
        payable
        nonReentrant
    {
        if (tokens[tokenId].minted[originalId]) {
            revert AlreadyMinted();
        }
        if (tokens[tokenId].original.ownerOf(originalId) != msg.sender) {
            revert Unauthorized();
        }
        if (msg.value < tokens[tokenId].mintPrice) {
            revert InsufficientEth();
        }
        tokens[tokenId].minted[originalId] = true;
        _mint(msg.sender, tokenId, 1, "");
    }

    function burn(uint256 tokenId, uint256 originalId) external nonReentrant {
        if (!tokens[tokenId].minted[originalId]) {
            revert NotFound();
        }
        if (balanceOf[msg.sender][tokenId] == 0) {
            revert Unauthorized();
        }
        tokens[tokenId].minted[originalId] = false;
        _burn(msg.sender, tokenId, 1);
    }

    //////
    /// Admin Stuff

    function setURI(uint256 tokenId, string memory _uri) external onlyOwner {
        tokens[tokenId].uri = _uri;
        emit URI(_uri, tokenId);
    }

    function setMintPrice(uint256 tokenId, uint256 mintPrice)
        external
        onlyOwner
    {
        tokens[tokenId].mintPrice = uint96(mintPrice);
        emit SetMintPrice(mintPrice, tokenId);
    }

    function addToken(
        uint256 tokenId,
        string memory _uri,
        ERC721 original
    ) external onlyOwner {
        tokens[tokenId].uri = _uri;
        tokens[tokenId].original = original;
        emit AddToken(tokenId);
        emit URI(_uri, tokenId);
    }
}

