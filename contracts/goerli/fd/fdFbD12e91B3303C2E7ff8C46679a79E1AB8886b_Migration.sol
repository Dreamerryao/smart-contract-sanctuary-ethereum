pragma solidity 0.8.6;

import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableMap.sol";
import "./utils/Governable.sol";
import "./interfaces/ISOLACEV2.sol";

contract Migration is Governable, ReentrancyGuard {
    using EnumerableMap for EnumerableMap.AddressToUintMap;

    // state variables
    bool public paused;
    address immutable private SOLACEv2;
    EnumerableMap.AddressToUintMap private _migrations;

    // modifiers
    modifier whileUnpaused() {
        require(!paused, "contract paused");
        _;
    }

    // events
    event PauseSet(bool paused);
    event MigrationsSet(uint256 count, uint256 totalAmount);
    event Migrated(address account, uint256 value);

    constructor(address _solaceV2, address _governance) Governable(_governance) {
        require(_solaceV2 != address(0), "zero address solacev2");
        SOLACEv2 = _solaceV2;
    }
    
    function setMigrations(address[] calldata _accounts, uint256[] calldata _amounts) external onlyGovernance {
        uint256 count = _accounts.length;
        require(count == _amounts.length, "length mismatch");
        uint256 totalAmount = 0;
        for (uint256 i = 0; i < count; i++) {
            _migrations.set(_accounts[i], _amounts[i]);
            totalAmount += _amounts[i];
        }

        emit MigrationsSet(count, totalAmount);
    }

    function migrate() external whileUnpaused nonReentrant {
        address account = msg.sender;
        // check
        (bool ok, uint256 amount) = _migrations.tryGet(account);
        require(ok, "invalid migration account");
        require(amount > 0, "no migration balance");
        
        // delete
        _migrations.remove(account);

        // migrate
        ISOLACEV2(SOLACEv2).mint(account, amount);

        // emit
        emit Migrated(account, amount);
    }

    function numOfAccounts() external view returns (uint256 count) {
        return _migrations.length();
    }

    function currentMigratableAmount() external view returns (uint256 sum) {
        uint256 length = _migrations.length();
        for (uint256 i = 0; i < length; i++) {
            (, uint256 amount) = _migrations.at(i);
            sum += amount;
        }
        return sum;
    }

    function balanceOf(address _account) external view returns (uint256 amount) {
         (, amount) =_migrations.tryGet(_account);
    }

    function setPaused(bool _paused) external onlyGovernance {
        paused = _paused;
        emit PauseSet(_paused);
    }

}

