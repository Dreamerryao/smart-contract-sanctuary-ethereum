pragma solidity ^0.8.9;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC777/IERC777.sol";

import "./interfaces/IVestingFixedDeposit.sol";

contract TokenHold is Ownable {
    using SafeMath for uint256;

    IERC777 public immutable token;
    IVestingFixedDeposit private withdrawTo;

    struct UserInfo {
        uint256 balance;
        uint256 start;
    }

    mapping(address => uint256) private _balances;

    uint256 public constant MIN_DEPOSIT_AMOUNT = 1 ether; // minimum of 100 Savl Token

    constructor(
        address tokenAddress_,
        address withdrawTo_
    ) {
        token = IERC777(tokenAddress_);
        withdrawTo = IVestingFixedDeposit(withdrawTo_);
    }

    function totalAssets() public view returns (uint256) {
        return token.balanceOf(address(this));
    }

    function balanceOf(address user) public view returns (uint256) {
        return _balances[user];
    }

    function deposit(uint256 amount) external virtual {
        require(amount > MIN_DEPOSIT_AMOUNT, "Deposit amount not meets minimal limit");
        _balances[_msgSender()] = _balances[_msgSender()].add(amount);
        token.operatorSend(_msgSender(), address(this), amount, "", "");
    }

    function withdraw() external virtual {
        withdrawTo.deposit(_msgSender(), _balances[_msgSender()]);
    }

}

