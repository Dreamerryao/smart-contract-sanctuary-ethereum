import {SafeTransferLib} from "solmate/utils/SafeTransferLib.sol";
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "../interfaces/ICREDS.sol";
import "../interfaces/ICREDIT.sol";

error EmptySend();

contract TokenManagerETH {
    using SafeTransferLib for address;

    ICREDS public creds;
    ICREDIT public credit;

    uint256 public globalDepositValue;

    event Deposit(address indexed from, uint256 amount);
    event Withdrawal(address indexed to, uint256 amount);
    event SubtractFromCredit(
        address indexed customer,
        uint256 tokenId,
        uint256 amount
    );

    constructor(ICREDS _creds, ICREDIT _credit) {
        creds = _creds;
        credit = _credit;
    }

    function deposit() external payable returns (uint256, uint256) {
        if (msg.value == 0) revert EmptySend();
        address customer = msg.sender;
        uint256 amount = msg.value;
        globalDepositValue += amount;
        creds.mint(customer, amount);
        (uint256 tokenId, uint256 creditValue) = credit.createCREDIT(
            customer,
            amount
        );
        emit Deposit(customer, amount);
        return (tokenId, creditValue);
    }

    //consolidate this and the claimUnderlying function
    //call it partialWithdrawOrClaimAll
    //call new function which determines which private function to call
    //call creditDecision, pass it the amount, the tokenId, and the customer
    function decreaseCredit(uint256 tokenId, uint256 amount)
        external
        returns (uint256)
    {
        address customer = msg.sender;
        globalDepositValue -= amount;
        creds.burn(customer, amount);
        credit.subtractValueFromCREDIT(customer, tokenId, amount);
        customer.safeTransferETH(amount);
        emit SubtractFromCredit(customer, tokenId, amount);
        return IERC20(address(creds)).balanceOf(msg.sender);
    }

    function claimAllUnderlying(uint256 tokenId) external returns (uint256) {
        address customer = msg.sender;
        uint256 amount = credit.deleteCREDIT(customer, tokenId);
        globalDepositValue -= amount;
        creds.burn(customer, amount);
        customer.safeTransferETH(amount);
        emit Withdrawal(customer, amount);
        return amount;
    }

    function getTotalBalance() external view returns (uint256) {
        return globalDepositValue;
    }
}

