pragma solidity >0.8.0;

import "./token/ERC721Attr.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract RoleHistory is ERC721Attr, Ownable {
    IERC721 _role;
    uint256 _currentId;

    struct Attribute {
        uint256 AttrId;
        string AttrName;
        string AttrURI;
        bool IsActive;
    }
    // attrId to Attribute
    mapping(uint256 => Attribute) _attributeById;
    mapping(uint256 => uint256) _firstTag;

    constructor(IERC721 _nft) ERC721Attr("RoleHistory", "RH", _nft) {
        _role = _nft;

        createAttribute("music", "", true);
        createAttribute("game", "", true);
        createAttribute("hangout", "", true);
        createAttribute("financial", "", true);
        createAttribute("read", "", true);
    }

    function claimAttribute(uint toTokenId, uint attrId) public {
        require(super._exists(attrId), "this attribute not exist");
        require(_role.ownerOf(toTokenId) != address(0), "invalid tokenId");

        require(_firstTag[toTokenId] == 0, "you selected a tag already");
        require(_attributeById[attrId].IsActive, "attribute not actived");
        _issue(toTokenId, attrId);
        _firstTag[toTokenId] = attrId;
    }

    function issue(uint toTokenId, uint attrId) public onlyOwner {
        require(_role.ownerOf(toTokenId) != address(0), "invalid tokenId");
        require(super._exists(attrId), "attribute not exist");
        require(_attributeById[attrId].IsActive, "attribute not actived");
        _issue(toTokenId, attrId);
    }

    function revoke(uint ownerTokenId, uint attrId) public onlyOwner {
        require(_role.ownerOf(ownerTokenId) != address(0), "invalid tokenId");
    
        _revoke(ownerTokenId, attrId);
    }

    function createAttribute(
        string memory attrName,
        string memory attrURI,
        bool isActive
    ) public onlyOwner {
        uint attrId = _currentId + startId();
        require(bytes(attrName).length > 0, "name must not empty");

        Attribute storage attr = _attributeById[attrId];
        attr.AttrId = attrId;
        attr.AttrName = attrName;
        attr.AttrURI = attrURI;
        attr.IsActive = isActive;
        _attrExists[attrId] = true;
        _newAttribute(attrId, attrName);

        unchecked {
            ++_currentId;
        }
    }

    function updateAttribute(
        uint attrId,
        string calldata attrName,
        string calldata attrURI
    ) public onlyOwner {
        require(_exists(attrId), "attr not exists");
        require(bytes(attrName).length > 0, "name must not empty");
        Attribute storage attr = _attributeById[attrId];
        attr.AttrId = attrId;
        attr.AttrName = attrName;
        attr.AttrURI = attrURI;
        _updateAttribute(attrId);
    }

    function switchAttribute(uint256 attrId, bool status) public onlyOwner {
        require(_exists(attrId), "attr not exists");
        Attribute storage attr = _attributeById[attrId];
        attr.IsActive = status;
        if (status) _openAttribute(attrId);
        else _closeAttribute;
    }

    function getAttribute(uint attrId)
        public
        view
        returns (
            uint256,
            string memory,
            string memory,
            bool
        )
    {
        Attribute memory attr = _attributeById[attrId];
        return (attr.AttrId, attr.AttrName, attr.AttrURI, attr.IsActive);
    }

    function tokenURI(uint attrId) public view returns (string memory) {
        _exists(attrId);
        Attribute memory attr = _attributeById[attrId];
        if (bytes(attr.AttrURI).length > 0) return attr.AttrURI;

        return attr.AttrURI;
    }

    function _setAttrURI(uint256 attrId, string calldata attrURI)
        internal
        virtual
    {
        Attribute storage attr = _attributeById[attrId];
        attr.AttrURI = attrURI;
    }

    function startId() private pure returns (uint) {
        return 1;
    }
}

