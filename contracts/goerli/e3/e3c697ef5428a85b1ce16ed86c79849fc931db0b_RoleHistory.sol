pragma solidity >0.8.0;

import "../interfaces/IERC721Attr.sol";
import "@openzeppelin/contracts/utils/Context.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/utils/introspection/ERC165.sol";

import "@openzeppelin/contracts/utils/Strings.sol";

contract ERC721Attr is IERC721Attr, Context, ERC165 {
    using Strings for uint256;
    // Import's ERC721 contract
    IERC721 public _ERC721;

    string _baseURI;
    // Token name
    string private _name;
    // Token symbol
    string private _symbol;

    uint256 private _totalAttributes;

    // ownerTokenId to get owned attr count
    mapping(uint256 => uint256) private _balances;
    mapping(uint256 => bool) _attrExists;
    //ownerTokenId => [attrId => isIssued];
    mapping(uint256 => mapping(uint256 => bool)) private _ownerIssued;

    constructor(
        string memory name_,
        string memory symbol_,
        IERC721 ERC721_
    ) {
        _name = name_;
        _symbol = symbol_;
        _ERC721 = ERC721_;
    }

    function _newAttribute(uint attrId, string memory attrName)
        internal
        virtual
    {
        _attrExists[attrId] = true;
        unchecked {
            ++_totalAttributes;
        }
        emit NewAttribute(attrId, attrName);
    }

    function _updateAttribute(uint attrId) internal virtual {
        emit UpdateAttribute(attrId);
    }

    function _closeAttribute(uint attrId) internal virtual {
        emit CloseAttribute(attrId);
    }

    function _openAttribute(uint attrId) internal virtual {
        emit OpenAttribute(attrId);
    }

    function balanceOf(uint256 ownerTokenId)
        public
        view
        virtual
        override
        returns (uint)
    {
        require(ownerTokenId > 0, "ERC721Badge: invalid owner token Id");
        require(
            _ERC721.ownerOf(ownerTokenId) != address(0),
            "ownerTokenId not exists"
        );
        return _balances[ownerTokenId];
    }

    function ownerAttrs(uint256 ownerTokenId)
        public
        view
        virtual
        override
        returns (uint[] memory)
    {
        require(
            _ERC721.ownerOf(ownerTokenId) != address(0),
            "invalid ownerTokenId"
        );
        uint[] memory attrs = new uint256[](_totalAttributes);
        for (uint i = 1; i < _totalAttributes; ) {
            if (_ownerIssued[ownerTokenId][i]) {
                attrs[i] = i;
            }
            unchecked {
                ++i;
            }
        }
        return attrs;
    }

    function _issue(uint256 ownerTokenId, uint256 attrId) internal virtual {
        require(_exists(attrId), "ERC721Attr: attr not exists");
        require(!_issued(ownerTokenId, attrId), "attr already issued");

        unchecked {
            _balances[ownerTokenId] += 1;
        }

        _ownerIssued[ownerTokenId][attrId] = true;
        emit Issue(ownerTokenId, attrId, block.timestamp);
    }

    function _revoke(uint256 ownerTokenId, uint256 attrId) internal virtual {
        require(
            ownerTokenId > 0 && attrId > 0,
            "ERC721Attr: mint to the zero token"
        );

        require(_exists(attrId), "ERC721Attr: token not exists");
        require(_issued(ownerTokenId, attrId), "attr not issued");

        unchecked {
            _balances[ownerTokenId] -= 1;
        }
        delete _ownerIssued[ownerTokenId][attrId];

        emit Revoke(ownerTokenId, attrId, block.timestamp);
    }

    function _exists(uint256 attrId) internal view virtual returns (bool) {
        return _attrExists[attrId];
    }

    function _issued(uint256 ownerTokenId, uint256 attrId)
        internal
        view
        virtual
        returns (bool)
    {
        return _ownerIssued[ownerTokenId][attrId];
    }

    function setERC721Address(address erc721) public virtual override {
        _ERC721 = IERC721(erc721);
    }

    function getERC721Address()
        external
        view
        virtual
        override
        returns (address)
    {
        return address(_ERC721);
    }

    function supportsInterface(bytes4 interfaceId)
        public
        view
        virtual
        override(ERC165, IERC165)
        returns (bool)
    {
        return
            interfaceId == type(IERC721).interfaceId ||
            interfaceId == type(IERC721Attr).interfaceId ||
            super.supportsInterface(interfaceId);
    }

    function _beforeTokenIssue(
        uint256 ownerTokenId,
        uint256 toTokenId,
        uint256 tokenId
    ) internal virtual {}

    function _afterTokenIssue(
        uint256 ownerTokenId,
        uint256 toTokenId,
        uint256 tokenId
    ) internal virtual {}

    function name() public view returns (string memory) {
        return _name;
    }

    function symbol() public view returns (string memory) {
        return _symbol;
    }
}

