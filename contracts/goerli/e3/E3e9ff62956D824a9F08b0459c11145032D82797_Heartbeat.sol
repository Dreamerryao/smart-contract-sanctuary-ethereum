    function latestValidatorStatus(address validator) external view override returns (Status memory) {
        return _validations[validator];
    }

    function minerNum() external view override returns (uint256) {
        return _minerNum;
    }

    function validatorNum() external view override returns (uint256) {
        return _validatorNum;
    }

    function _revoke(address miner) internal onlyOwner whenNotPaused onlyMinerExist(miner) {
        delete _registry[miner];
        delete _heartbeats[miner];

        _minerNum--;

        emit Revoked(miner, block.timestamp);
    }

    function depositETH() public payable {
        require(msg.value > 0, "HB: you need to send some ether");
    }

    function safeBatchTransferETH(address[] calldata users, uint256 amount) public payable onlyOwner {
        require(address(this).balance >= users.length * amount, "HB: ether not enough");
        for (uint i = 0; i < users.length; i++) {
            require(!users[i].isContract(), "HB: only support external account");
            payable(users[i]).transfer(amount);
        }
    }

    function withdrawETH(uint256 ethAmount) public onlyOwner {
        require(address(this).balance >= ethAmount, "HB: ether not enough");

        payable(owner()).transfer(ethAmount);
    }

    function withdrawToken(address token, uint256 amount) external override onlyOwner {
        IERC20(token).safeTransfer(owner(), amount);
    }

    receive() external payable virtual {}

    fallback() external payable virtual {}
}

