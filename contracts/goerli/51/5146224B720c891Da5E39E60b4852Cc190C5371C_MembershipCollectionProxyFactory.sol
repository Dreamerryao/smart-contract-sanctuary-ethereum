        TierInfo[_givenTier].floorPrice = _floorPrice;
        TierInfo[_givenTier].totalSupply = _totalSupply;
        TierInfo[_givenTier].isSet = true;

        return _givenTier;
    }

    function setRoyaltyAddress(address _royaltyReceiver) public onlyOwner {
        royaltiesAddress = _royaltyReceiver;
        emit RoyaltyAddressUpdated(royaltiesAddress);
    }

    function setPrimaryMintPrice(uint256 _primaryMintPrice) public onlyOwner {
        primaryMintPrice = _primaryMintPrice;
    }

    function getTreasury(address _creatorDAO) internal view returns (address) {
        return CreatorDAO(_creatorDAO).getTreasury();
    }

