contract MembershipCollectionProxyFactory is ERC2771ContextUpgradeable {
    event ProxyCreated(address newProxy);

    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor(
        MinimalForwarderUpgradeable _minimalForwarder
    ) ERC2771ContextUpgradeable(address(_minimalForwarder)) { }

    function createProxyContract(
        Config.Deployment memory _deployConfig,
        Config.Runtime memory _runConfig
    ) public returns (address) {
        GenericProxy newProxy = new GenericProxy( 
            address(_deployConfig.masterCopy),
            abi.encodeWithSelector(
                // Replace this with membership collection nft
                MembershipCollection(address(_deployConfig.masterCopy)).initialize.selector,
                _deployConfig.name,
                _deployConfig.symbol,
                _deployConfig.owner,
                _deployConfig.tokensBurnable ,
                _runConfig.baseURI,
                _runConfig.metadataUpdatable,
                _runConfig.tokensTransferable,
                _runConfig.creatorDAO
            ),
            MinimalForwarder(_deployConfig.forwarder)
        );

        emit ProxyCreated(address(newProxy));
        return address(newProxy);
    }
}

