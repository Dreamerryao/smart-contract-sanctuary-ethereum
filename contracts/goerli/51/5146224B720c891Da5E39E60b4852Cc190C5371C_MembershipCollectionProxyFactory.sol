            interfaceId == type(IERC2981Upgradeable).interfaceId;
    }

    function royaltyInfo(uint256 tokenId, uint256 salePrice)
        external
        view
        returns (address, uint256)
    {
        return (
            royaltiesAddress,
            (royaltiesBasisPoints * salePrice) / DEFAULT_ROYALTIES_BASIS
