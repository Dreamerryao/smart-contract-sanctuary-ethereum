import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/interfaces/IERC721.sol";


contract Ballot is Ownable{

    // ===== 1. Property Variables ===== //

    address public nftCollectionAddress = 0x19B501714718EdF124d4Ad5b6c9033343Cd4e3E6; // NFT collection address, who holds an NFT from this collection can vote
    address public admin; // admin address
    bool public isVoteActive = false; // state variable that define if the voting is active
    address public winnerAddress; // Address of the winner of the ballot

    // This declares a state variable that
    // stores the address of every NFT owner that voted.
    mapping(address => bool) public voted;

    // This is a type for a single proposal.
    struct Proposal {
        string name;   
        address[4] proposalAddresses; // variable that contains the 4 address that partecipate in the ballot
        uint256[4] voteCountAddresses; // variable that stores the vote count of each address that participate in the ballot
    }

    Proposal public proposal;

    // ===== 2. Constructor ===== //

    constructor(address[4] memory withdrawAddresses, string memory proposalName, uint256[4] memory voteCounInit) {
        proposal = Proposal({
                name: proposalName,
                proposalAddresses: withdrawAddresses,
                voteCountAddresses: voteCounInit
        });
    }

    // function callable by the owner to set the ballot admin
    function setAdmin(address adminAddress) public onlyOwner {
        admin = adminAddress;
    }

    // function to let the admin enable/disable voting
    function enableVoting(bool start) public {
        require(msg.sender == admin, "Not the admin!");
        isVoteActive = start;
    }

    // function to check if an address holds an NFT from the nftCollectionAddress contract
    function walletHoldsToken(address _wallet, address _contract) public view returns (bool) {
        return IERC721(_contract).balanceOf(_wallet) > 0;
    }
    
    // voting function, the voter can choose between 4 addresses indexed as 0,1,2,3
    function vote(uint addressNumber) external {
        require(isVoteActive, "Voting not started yet!");
        require(walletHoldsToken(msg.sender, nftCollectionAddress), "Has no right to vote");
        require(!voted[msg.sender], "Already voted.");
        require(addressNumber >= 0, "You can choose only between 4 addresses, indexed as => 0,1,2,3");
        require(addressNumber <= 3, "You can choose only between 4 addresses, indexed as => 0,1,2,3");
        voted[msg.sender] = true;

        proposal.voteCountAddresses[addressNumber] += 1;
    }

    // function that computes the index of the winning address
    function winningAddressIndex() public view
            returns (uint winningAddressIndex_)
    {
        uint256 largest = 0;
        uint256 largestIndex = 0; 
        uint256 i;

        for(i = 0; i < proposal.voteCountAddresses.length; i++){
            if(proposal.voteCountAddresses[i] > largest) {
                largest = proposal.voteCountAddresses[i]; 
                largestIndex = i;
            } 
        }
        return largestIndex;
    }

    // function that returns the winning address
    function winningAddress() public view
            returns (address winningAddress_)
    {
        winningAddress_ = proposal.proposalAddresses[winningAddressIndex()];
    }

    // function to pick the winner address, callable by the admin of the ballot
    function pickWinner() public {
        require(msg.sender == admin, "Not the admin!");
        require(!isVoteActive, "Voting is still ongoing!");
        winnerAddress = winningAddress();
    }

    // withdraw function used by the owner to withdraw the contract funds to the winner address
    function withdraw() public onlyOwner {
        require(address(this).balance > 0, "Balance is zero!");
        payable(winnerAddress).transfer(address(this).balance);
    }

    // receive function to allow the smart contract to receive funds
    receive() external payable {
    }
}

