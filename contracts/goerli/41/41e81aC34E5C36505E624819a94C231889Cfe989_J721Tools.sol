    function getHash(OfferOrder calldata offerOrder) public pure returns (bytes32) {
        return
            keccak256(
                abi.encode(
                    offerOrder.offerer,
                    offerOrder.collection,
                    offerOrder.nonce,
                    offerOrder.amount,
                    offerOrder.price,
                    offerOrder.expiresAt,
                    offerOrder.tokenIds,
                    offerOrder.slat
                )
            );
    }

    function getId(OfferOrder calldata offerOrder) public pure returns (bytes32) {
        return
            keccak256(
                abi.encodePacked(
                    offerOrder.offerer,
                    offerOrder.collection,
                    offerOrder.nonce,
                    offerOrder.amount,
                    offerOrder.price,
                    offerOrder.expiresAt,
                    offerOrder.tokenIds,
                    offerOrder.slat
                )
            );
    }

    function increaseNonce() public {
        nonces[msg.sender]++;
    }

    function cancelOfferOrder(OfferOrder calldata offerOrder) public {
        require(msg.sender == offerOrder.offerer, "721tools: Permission denied");
        bytes32 _id = getId(offerOrder);
        OrderStatus storage orderStatus = orderStatuses[_id];
        orderStatus.isCancelled = true;
    }

    function fillOrder(
        OfferOrder calldata offerOrder,
        bytes memory signature,
        uint256 tokenId,
        uint256 index
    ) public payable returns (bool) {
        bytes32 _id = getId(offerOrder);

        OrderStatus storage orderStatus = orderStatuses[_id];

        // valid signature
        bytes32 hash = getHash(offerOrder);
        require(offerOrder.offerer == hash.toEthSignedMessageHash().recover(signature), "721tools: wrong signature");

        //init if not inited
        if (!orderStatus.isInited) {
            orderStatus.amount = offerOrder.amount;
            orderStatus.isInited = true;
        }

        require(orderStatus.amount > 0, "721tools: not enough offer amount");
        require(!orderStatus.isCancelled, "721tools: order cancelled");
        require(offerOrder.expiresAt > block.timestamp, "721tools: order expried");
        // TODO: use == or use >= ?
        require(offerOrder.nonce == nonces[offerOrder.offerer], "721tools: order cancelled");

        IERC721 nft = IERC721(offerOrder.collection);
        IERC20 token = IERC20(offerOrder.token);

        bool canFill = false;
        if (offerOrder.tokenIds.length == 0) {
            canFill = true;
        } else {
            if (offerOrder.tokenIds[index] == tokenId) {
                canFill = true;
            }
        }
        require(canFill, "721tools: no valid nft");

        {
            nft.safeTransferFrom(offerOrder.offerer, msg.sender, tokenId);

            uint256 _price = offerOrder.price;

            if (takeFee != 0) {
                uint256 _fee = (offerOrder.amount * takeFee) / 100;
                // TODO: need a function to withdraw erc20
                token.safeTransferFrom(msg.sender, address(this), _price);
                _price = _price - _fee;
            }
            token.safeTransferFrom(msg.sender, offerOrder.offerer, _price);

            orderStatus.amount--;
        }

        // emit OrderFilled(msg.sender, offerOrder.offerer, offerOrder.collection, tokenId, 1, offerOrder.price);
        return true;
    }

    function withdrawEther() external onlyOwner {
        uint256 balance = address(this).balance;
        (bool success, ) = payable(msg.sender).call{value: balance}("");
        require(success, "721tools: Transfer failed.");
    }

    function withdrawToken(IERC20 token) external onlyOwner {
        uint256 amount = token.balanceOf(address(this));
        token.transferFrom(address(this), msg.sender, amount);
    }
