// File: SpoonerStaking.sol



pragma solidity ^0.8.0;






contract NFT_Staking is Ownable, ERC721Holder {

    //0xA50D40447359BAec2f157Da730F92C6E7F22519e NFT Contract
    IERC721 internal spooner;

    struct data {
        uint nftId;
        uint stakeDate;
        uint lastClaim;
        bool staked;
    }       
    mapping (address => data[]) public _record;    //token to record
    mapping (address => uint256) public _userNftCount;
    mapping (uint256 => address) public _idtoaddress;

    uint256 public totalStaked; 
    uint256 public totalUnstaked;

    event nftStaked (
        address indexed _user,
        uint256 indexed _id,
        uint256 _time
    );

    event nftUnstaked (
        address indexed _user,
        uint256 indexed _id,
        uint256 _time
    );

    constructor(address _nft) {
        spooner = IERC721(_nft);
    }

    function bulkStake(uint[] memory ids) public {

        address account = msg.sender;
        uint length = ids.length;

        for(uint i = 0; i < length; i++) {

            spooner.safeTransferFrom(account, address(this) , ids[i],"");

            _record[account].push(
                data({
                    nftId: ids[i],
                    stakeDate: block.timestamp,
                    lastClaim: block.timestamp,
                    staked: true
                })
            );
            _userNftCount[account]++;
            totalStaked++;
            _idtoaddress[ids[i]] = account;
            emit nftStaked(account,ids[i],block.timestamp);
        }

    }

     function unstake(uint[] calldata ids) public {
        address account = msg.sender;
        uint _length = getLength(account); 
        bool found;
        require(ids.length <= _length,"Error: Invalid Call!");
        if(_length == 0) {
            revert("Record Not Found!!");
        }
      
        for(uint i = 0; i < ids.length; i++) {

            for(uint j = 0; j < _length; j++){

                if(_record[account][j].nftId == ids[i]){
                    _record[account][j] = data({   
                    nftId: 0,
                    stakeDate: 0,
                    lastClaim: 0,
                    staked: false
                    });
                    _userNftCount[account]--;
                    totalStaked--;
                    totalUnstaked++;
                    _idtoaddress[ids[i]] = address(0x0);
                    spooner.transferFrom(address(this),account, ids[i]);
                    emit nftUnstaked(account,ids[i],block.timestamp);
                    found = true;
                }
            }
        }
        if(!found) revert("Invalid Record");
    }   

    function getStakedId(address _adr) public view returns (uint256[] memory) {
        uint256 totalStakedCount = getLength(_adr);
        uint256 arr = _userNftCount[_adr];
        uint256[] memory StakedTokenIds = new uint256[](arr);
        uint256 index = 0;
        uint256 _looper = 0;

        while(index < totalStakedCount) {
            if(_record[_adr][index].staked){
                StakedTokenIds[_looper] = _record[_adr][index].nftId;
                _looper++;
            }
            index++;
        }

        return StakedTokenIds;
    }

    function getLength(address _adr) public view returns(uint){
        return _record[_adr].length;
    }

    function rescueFunds() public onlyOwner {
        payable(owner()).transfer(address(this).balance);
    }
    
    function rescueTokens(address _token,uint _amount) public onlyOwner {
        IERC20(_token).transfer(owner(),_amount);
    }
    
    //don't use this function until nft got stucked
    function rescueNft(uint _ids) public onlyOwner {
        spooner.safeTransferFrom(address(this),owner(),_ids,"");
    }

    function setNft(address _adress) public onlyOwner {
        spooner = IERC721(_adress);
    }


}