    ERC20PermitUpgradeable public bondCoin; //ERC20 token used to provide bonds

    // Slash safety period--if a keeper leaves, this is the amount of time (in seconds) they must 
    //    wait before they can withdraw their bond.
    uint256 public transferDelay;

    address[] public registeredKeepers;                 //Array of keepers--useful for looping through to find vote numbers
    mapping(address => WorkerDetails) public registry;  //Registry of keeper info for keepers and former keepers.

    function initialize(
        address coinAddress,
        uint256 keeperTransferDelay,
        uint256 maxKeepers,
        uint256 bondSize
    ) public initializer {
        __UUPSUpgradeable_init();
        __Ownable_init();
        bondCoin = ERC20PermitUpgradeable(coinAddress);
        transferDelay = keeperTransferDelay;
        maxNumKeepers = maxKeepers;
        require (bondSize != 0, 'SIZE');
        bondAmount = bondSize;
    }

    function _authorizeUpgrade(address) internal override onlyOwner {}

    /**
     * @dev Check whether there is a license available for a new keeper.
     * @return True if a license is available, false otherwise.
     */
    function isLicenseAvailable() external view returns (bool) {
        return (registeredKeepers.length < maxNumKeepers);
    }

    /**
     * @dev get keeper array
     * @return array of keepers
     */
    function getRegisteredKeepers() public view returns (address[] memory) {
        return registeredKeepers;
    }

