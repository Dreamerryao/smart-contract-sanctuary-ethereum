import "./interfaces/IGasVault.sol";
import "./interfaces/IOrchestrator.sol";
import "./KeeperRegistry.sol";
import "@openzeppelin/contracts-upgradeable/utils/ContextUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol";

//Currently, this contract doubles as a vault to store ether to fund transactions.
//No current method for slashing misbehaving strategies. The worst they can do is trigger repeated calls to this contract.
contract Orchestrator is IOrchestrator, OwnableUpgradeable, UUPSUpgradeable {
    uint16 public constant actionThresholdPercent = 51; //If an action is approved by >= approvalThresholdPercent members, it is approved

    //Address of GasVault, which is contract used to recompense keepers for gas spent executing actions
    IGasVault internal gasVault;

    //Address of Keeper Registry, which handles keeper verification
    KeeperRegistry internal keeperRegistry;

    uint256 public actionCount;

    /*
        bytes32 is hash of action. Calculated using keccak256(abi.encode(targetAddress, jobEpoch, calldatas))

        Action approval meaning:
        0: Pending
        1: Rejected
        2: Approved
        Both votes and overall approval status follow this standard.
    */
    mapping(bytes32 => ActionState) public actions;

    /*  
        actionHash => keeperAddress => vote
    */
    mapping(bytes32 => mapping(address => uint8)) public actionVotes;

    modifier onlyKeeper() {
        require(
            keeperRegistry.isKeeper(_msgSender()),
            "Only Keeper can call this function"
        );
        _;
    }

    function initialize(KeeperRegistry _keeperRegistry)
        public
        initializer
    {
        __Ownable_init();
        __UUPSUpgradeable_init();
        keeperRegistry = _keeperRegistry;
    }

    function setGasVault(address _gasVault) external onlyOwner {
        gasVault = IGasVault(_gasVault);
    }

    function _authorizeUpgrade(address) internal override onlyOwner {}

    /**
     * @dev Create an action/proposal which is open for approval for all members of the group.
        An action consists of one or more methods meant to be executed once the action is approved.
        This function is basically equivalent to vote(), except that it also emits an event containing the action information.
     * @param targetAddress the address of the contract to be called with the calldatas.
        Note that a targetAddress pointing to the orchestrator cannot be executed. Since createAction is not actually necessary to run an action,
        we check for this when the action is executed.
     * @param jobEpoch is the job epoch of this action.
     * @param calldatas the calldatas of the methods to be executed.         
        Since calldata includes the function selector, and time-sensitive data can only add parameters, time-sensitive data can only be added to calldata
        constructed to accept it. Passing in time-sensitive data when the selector doesn't accept it, or failing to pass it in when the selector does, will simply cause the
        call to fail.
     *
     * Emits an {ActionCreated} event.
     */
    function createAction(
        address targetAddress,
        uint256 jobEpoch,
        bytes[] calldata calldatas
    ) external override onlyKeeper   {
        // Get # of timeIndependentLengths passed in. If this is greater than 0, that means that this action is using time-sensitive data in one of its methods.
        bytes32 _actionHash = keccak256(
            abi.encode(
                targetAddress,
                jobEpoch,
                calldatas
            )
        );

        //Have action creator vote for this action (no keeper should ever create an action they aren't endorsing)
        actionVotes[_actionHash][_msgSender()] = 2;

        emit ActionCreated(
            _msgSender(),
            targetAddress,
            jobEpoch,
            calldatas
        );
    }

    /**
     * @dev Allows an existing `_member` of the group to approve/reject an already created action/proposal given by `actionId`
     * which is open for approval for all members of the group.
     * @dev 1 represents no, 2 represents yes. 0 represents abstaining, or the default value.
     *
     * Emits a {vote} event.
     */
    function approveAction(bytes32 actionHash, uint8 _vote)
        public
        override
        onlyKeeper
        returns (bool)
    {
        require(
            _vote < 3, "Invalid vote"
        );

        actionVotes[actionHash][_msgSender()] = _vote;
        emit vote(actionHash, msg.sender, _vote);
        return true;
    }

    /**
     * @dev Returns true if an action with given `actionId` is approved by all existing members of the group.
     * It’s up to the contract creators to decide if this method should look at majority votes (based on ownership)
     * or if it should ask consent of all the users irrespective of their ownerships.
     */
    function actionApprovalStatus(bytes32 actionHash) public view returns (uint8) {
        uint256 yesApprovals;
        uint256 noApprovals;
        address[] memory keepers = keeperRegistry.getRegisteredKeepers();
        uint256 _keeperAmount = keepers.length;
        for (uint256 i = 0; i != _keeperAmount; i++) {
            uint8 approval = actionVotes[actionHash][keepers[i]];
            if (approval == 1)   {
                noApprovals += 1;
            }
            else if (approval == 2)    {
                yesApprovals += 1;
            }
        }
        if ((yesApprovals * 100) / keepers.length >= actionThresholdPercent)   {
            return 2;
        }
        else if 
        (((keepers.length - noApprovals) * 100) / keepers.length < actionThresholdPercent)   {//If enough keepers have voted no for yes to be impossible, the action is rejected
            return 1;
        } 
        else return (0);
    }

    /**
     * @dev Executes the action referenced by the given `actionId` as long as it is approved actionThresholdPercent of group.
     * The executeAction executes all methods as part of given action in an atomic way (either all should succeed or none should succeed).
     * Once executed, the action should be set as executed (state=3) so that it cannot be executed again.

     * @param targetAddress is the address which will be receiving the action's calls.
     * @param jobEpoch is the job epoch of this action.
     * @param calldatas is the COMPLETE calldata of each method to be called
     * note that the hash is created using the sliced calldata, but here it must be complete or the method will revert.
     * @param timeIndependentLengths--For each calldata, the number of bytes that is NOT time-sensitive. If no calldatas are time-sensitive, just pass an empty array.
     *
     * Emits an {ActionStateChanged} event.
     * dynamicData is an encoded bytes[] array of data to be appended to each calldata.
     */
    function executeAction(
        address targetAddress,
        uint256 jobEpoch, 
        bytes[] calldata calldatas, 
        uint256[] calldata timeIndependentLengths
    )
        external
        onlyKeeper
        returns (ActionState)
    {
        //Make sure this action isn't illegal
        require (targetAddress != address(this), 'Invalid target address');

        //Make sure this action is approved and has not yet been executed
        bytes32 newActionHash;
        if (timeIndependentLengths.length == 0) {
            // If none of the data is time-sensitive, just use passed in calldatas
            newActionHash = keccak256(
                abi.encode(
                    targetAddress,
                    jobEpoch,
                    calldatas
                )
            );
        } else   {
            // If some of it is time-sensitive, create a new array using timeIndependentLengths to represent what was originally passed in, then compare that hash instead
            uint256 numCalldatas = timeIndependentLengths.length; 

            //Construct original calldatas
            bytes[] memory timeIndependentCalldatas = new bytes[](numCalldatas);
            for (uint256 i = 0; i != numCalldatas; i++)   {
                timeIndependentCalldatas[i] = calldatas[i][:timeIndependentLengths[i]];
            }

            //Create hash
            newActionHash = keccak256(
                abi.encode(
                    targetAddress,
                    jobEpoch,
                    timeIndependentCalldatas
                )
            );
        }

        // Ensure action has not yet been executed
        require (actions[newActionHash] == ActionState.PENDING, 'Action already executed');

        //Check action approval status, execute accordingly.
        uint8 actionApproval = actionApprovalStatus(newActionHash);
        if (actionApproval == 2) {
            //Set aside gas for this action. Keeper will be reimbursed ((originalGas - [gas remaining when returnGas is called]) * gasPrice) wei.
            uint256 originalGas = gasleft();

            bool success;

            (success, ) = address(this).call{
                gas: gasVault.gasAvailableForTransaction(targetAddress) //Withdraw required gas from strategy account
            }(
                abi.encodeWithSignature(
                    "_executeAction(address,bytes)", 
                    targetAddress, 
                    abi.encode(calldatas)
                )
            );

            //Reimburse keeper for gas used. It will be stored inside the GasVault.
            gasVault.reimburseGas(targetAddress, originalGas);

            //Record result
            if (success) {
                emit ActionExecuted(newActionHash, _msgSender());

                //Set state to completed
                actions[newActionHash] = ActionState.COMPLETED;

                return ActionState.COMPLETED;
            } else   {
                emit ActionFailed(newActionHash);

                return ActionState.PENDING;
            }
        } else if (actionApproval == 1) {
            actions[newActionHash] = ActionState.REJECTED;
            emit ActionRejected(newActionHash, _msgSender());
            return ActionState.REJECTED;
        } else   {
            //If actionApproval == 0, action is not approved yet
            revert("Votes lacking; state still pending");
        }
    }

    function _executeAction(address targetAddress, bytes calldata encodedCalldata) external {
        require(
            msg.sender == address(this),
            "Only Orchestrator can call this function"
        );

        bytes[] memory calldatas = abi.decode(encodedCalldata, (bytes[]));

        for (uint256 i = 0; i != calldatas.length; i++) {
            (bool success, ) = targetAddress.call(
                calldatas[i]
            );

            //If any method fails, the action will revert, reverting all other methods but still pulling gas used from the GasVault.
            require(success);
        }
    }
}

