        uint256 currentBondHeld = registry[targetKeeper].bondHeld;
        if (currentBondHeld < amount)   {
            amount = currentBondHeld;
        }
        freeCoin += amount;

        uint256 newBond = currentBondHeld - amount;
        registry[targetKeeper].bondHeld = newBond;

        //Remove user as keeper if they are below threshold
        if (newBond < bondAmount) {
            _removeKeeper(targetKeeper);
        }

