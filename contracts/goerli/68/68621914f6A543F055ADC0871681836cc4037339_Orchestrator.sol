        uint256 keeperIndex = registry[targetAddress].arrayIndex;
        //firstEmptyKeeperIndex must be checked to avoid out of bounds error
        return keeperIndex < registeredKeepers.length && registeredKeepers[keeperIndex] == targetAddress;
