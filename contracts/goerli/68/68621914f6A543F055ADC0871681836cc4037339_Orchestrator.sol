     * @dev Removes target keeper from keeper array and deletes their entry in the registry. Moves other keepers in the array around as necessary.
     * @dev does not touch bondHeld, leaveDate, or generally the targetKeeper's registry--these are only removed if and when the keeper calls leave() or is slashed.
        Before then the registry is still useful to see how much bondCoin the keeper has, and when their leave date is.
     * @param targetKeeper keeper to remove
     */

    function _removeKeeper(address targetKeeper) internal   {
        //Swap last keeper with target keeper, then delete last keeper
        uint256 numKeepers = registeredKeepers.length;

        address lastKeeperAddress = registeredKeepers[numKeepers - 1];
        //Get keeper info for lastKeeper and leaving keeper
        uint128 targetArrayIndex = registry[targetKeeper].arrayIndex;

        //If keeper to be removed is not the last keeper, it must first be swapped with the last keeper to keep the array functional.
        if (targetArrayIndex != numKeepers - 1) {
            //Set lastKeeper's array index to targetKeeper's former array index
            registry[lastKeeperAddress].arrayIndex = targetArrayIndex;

            //Set keeper array at targetKeeper's former location to lastKeeper address
            registeredKeepers[targetArrayIndex] = lastKeeperAddress;
        }
        //Remove last element from registeredKeepers array. The keeper stored at this element (if it was not targetKeeper) is now at targetKeeper's former index.
        registeredKeepers.pop();
    }

    /**
     * @dev withdraws slashed tokens from the vault and sends them to targetAddress.
     * @param amount amount of bondCoin to withdraw
     * @param targetAddress address receiving the tokens
     */
    function withdrawFreeCoin(uint256 amount, address targetAddress) external onlyOwner {
        freeCoin -= amount;
        bondCoin.transfer(targetAddress, amount);
    }

    /**
     * @dev change bondAmount to a new value.
     * @dev implicitly changes keeper permissions. If the bondAmount is being increased, existing keepers will not be slashed or removed. 
            note, they will still be able to vote until they are slashed.
     * @param amount new bondAmount.
     */
    function changeBondAmount(uint256 amount) external onlyOwner {
        require(amount != 0, 'SIZE');
        bondAmount = amount;
    }

    /**
     * @dev change numKeepers to a new value. If numKeepers is being reduced, this will not remove any keepers, nor will it change orchestrator requirements.
     */
    function changeNumKeepers(uint16 newNumKeepers) external onlyOwner   {
        maxNumKeepers = newNumKeepers;
    }
}

