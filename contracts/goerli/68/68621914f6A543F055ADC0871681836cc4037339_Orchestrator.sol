        WorkerDetails memory info = registry[msg.sender];
        require(info.leaveDate != 0 && info.leaveDate <= block.timestamp, 'LEAVE_DELAY');
        bondCoin.transfer(msg.sender, info.bondHeld);
        delete registry[msg.sender];
    }

