        //Remove permissions immediately, allow keeper to remove funds once a transferDelay has passed. This ensures that user can be slashed if they misbehaved just before leaving.
        registry[msg.sender].leaveDate = uint128(block.timestamp + transferDelay);

        //Remove user as keeper--this removes user from the array. Their index will remain for now, but be meaningless.
        _removeKeeper(msg.sender);
        emit permissionChanged(msg.sender, permissionType.NONE);
    }

