                bondHeld: newBondAmount,
                arrayIndex: uint128(thisKeeperIndex),
                leaveDate: 0
            });
            emit permissionChanged(msg.sender, permissionType.FULL);

            //Add the new keeper to the array
            registeredKeepers.push(msg.sender);
        }
