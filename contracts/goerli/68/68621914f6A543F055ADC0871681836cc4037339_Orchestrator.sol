     * @dev setup utility function for owner to add initial keepers. Addresses must each be unique and not hold any bondToken.
     * @param joiners array of addresses to become keepers.
     * note that this function will pull bondToken from the owner equal to bondAmount * numJoiners.
     */
    function joiningForOwner(address[] calldata joiners)
        public
        onlyOwner
    {
        uint256 joinersLength = joiners.length;
        uint256 _firstEmptyKeeperIndex = registeredKeepers.length;
        uint256 _bondAmount = bondAmount;

        //Make sure there is room for these keepers
        require(
            _firstEmptyKeeperIndex + joinersLength <= maxNumKeepers,
            "Insufficient licenses."
        );

        for (uint256 i = 0; i != joinersLength; i++) {
            //Make sure the address isn't already registered. note that this means any given address with any bondAmount will cause the whole function to revert.
            //This is the cheapest way to ensure this address hasn't already been added (which would break the contract).
            require(registry[joiners[i]].bondHeld == 0, "Address not new.");
            registry[joiners[i]] = WorkerDetails({
                bondHeld: _bondAmount,
                arrayIndex: uint128(_firstEmptyKeeperIndex + i),
                leaveDate: 0
            });
            registeredKeepers.push(joiners[i]);
        }

        bondCoin.transferFrom(msg.sender, address(this), _bondAmount * joinersLength);
    }

