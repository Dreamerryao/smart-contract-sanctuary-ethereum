contract Stabilizer is Owned {
  using SafeERC20 for ERC20;

  // USD
  uint public junior_tranche_book_value;
  uint public senior_tranche_book_value;

  // Senior/Junior ratio
  uint public ratio;

  // SWEEP - Senior Tranche in SWEEP
  uint public sweep_borrowed;

  // USD - banker amount
  uint public banker_bucket;

  // Percentage - 6 decimals
  uint public protocol_spread;

  // Value of investment
  uint public current_asset_value;
  uint public valuation_time;

  // open / close the stabilizer
  bool public open = true;

  // Protocol Actors
  address public banker;
  address public asset;
  address public treasury;

  // Protocol Contracts
  IAMM public amm;

  // Tokens
  ISweep public SWEEP;
  ERC20 public USD;

  // Token precision helpers
  uint public missing_decimals;
  uint private constant PRECISION = 1e6;

  // Withdrawal availability - RECHECK
  uint public constant SECONDS_PER_DAY = 60 * 60 * 24;
  uint public timelock;
  uint public timelock_days;

  constructor(
    address _owner_address,
    address _banker_address,
    address _asset_address,
    address _treasury_address,
    address _amm_address,
    address _sweep_address,
    address _usdc_address,
    uint _junior_percentage,
    uint _protocol_spread,
    uint _timelock_days
  ) Owned(_owner_address) {
    banker = _banker_address;
    asset = _asset_address;
    treasury = _treasury_address;

    amm = IAMM(_amm_address);

    SWEEP = ISweep(_sweep_address);
    USD = ERC20(_usdc_address);

    ratio = ratioFromPercentage(_junior_percentage);
    protocol_spread = _protocol_spread;
    timelock_days = _timelock_days * SECONDS_PER_DAY;

    missing_decimals = SWEEP.decimals() - USD.decimals();
  }

  // MODIFIERS //

  modifier onlyBanker() {
    require(msg.sender == banker, "Only Banker");
    _;
  }

  modifier isOpen(){
    require(open, "stabilizer is closed");
    _;
  }

  // EXTERNAL ACTIONS //

  function deposit(uint amount) external onlyBanker {
    require(amount > 0, "the amount must be greater than 0");
    banker_bucket += amount;
    USD.safeTransferFrom(msg.sender, address(this), amount);
  }

  function invest() external onlyBanker isOpen {
    require(SWEEP.isValidMinter(address(this)) == true, "This stabilizer isn't added as minter");
    require(banker_bucket > 0, "the banker_bucket must be greater than 0");
    timelock = block.timestamp + timelock_days;

    uint sweep_price = SWEEP.amm_price();
    require(sweep_price >= SWEEP.target_price(), "Sweep Price must be bigger than the Target Price");

    uint sweep_to_borrow = SWEEPtoUSD(calculateSenior(banker_bucket), sweep_price);
    uint max_borrow = SWEEP.minters(address(this)).max_mint_amount;
    uint sweep_available = max_borrow - sweep_borrowed;
    uint sweep_to_exchange = Math.min(sweep_available, sweep_to_borrow);
    uint senior_investment;

    junior_tranche_book_value += banker_bucket;

    if(sweep_to_exchange > 0) {
      sweep_borrowed += sweep_to_exchange;
      SWEEP.minter_mint(address(amm), sweep_to_exchange);
      senior_investment = amm.swapExactInput(address(SWEEP), address(USD), 3000, sweep_to_exchange, sweep_price);
      senior_tranche_book_value += senior_investment;
    }

    // recalculates the ratio
    ratio = calculateRatio();

    // Send the investment to the asset
    USD.safeTransfer(address(asset), banker_bucket + senior_investment);
    banker_bucket = 0;
  }

  function payback(uint256 amount) external {
    uint sweep_price = SWEEP.amm_price();
    require(sweep_price <= SWEEP.target_price(), "Sweep Price must be less than the Target Price");

    // get the usd back
    USD.safeTransferFrom(address(asset), address(this), amount);

    // repay the senior tranche debt if necessary
    if(sweep_borrowed > 0) {
      // calculate the total sweep we can buy with the usd amount
      uint sweep_available = SWEEPtoUSD(amount, sweep_price);
      bool repayment_exceeds_debt = sweep_available > sweep_borrowed;
      uint usd_to_exchange;

      if(repayment_exceeds_debt) {
        usd_to_exchange = USDtoSWEEP(sweep_borrowed, sweep_price);
      } else {
        usd_to_exchange = amount;
      }

      amount -= usd_to_exchange;
      USD.safeTransfer(address(amm), usd_to_exchange);
      uint sweep_obtained = amm.swapExactInput(address(USD), address(SWEEP), 3000, usd_to_exchange, sweep_price);

      if(repayment_exceeds_debt) {
        sweep_borrowed = 0;
        // open = false; RECHECK
      } else {
        sweep_borrowed -= sweep_obtained;
      }

      SWEEP.refreshTargetPrice(sweep_price);

      // burn all the exchanged sweeps
      TransferHelper.safeApprove(address(SWEEP), address(this), sweep_obtained);
      SWEEP.minter_burn_from(sweep_obtained);
    }

    if(amount > 0){
      // send the protocol spread to the treasury
      uint treasury_amount = (amount * (protocol_spread/100)) / PRECISION;
      amount -= treasury_amount;
      USD.safeTransfer(treasury, treasury_amount);
    }

    // leaves the withdraw availability in a variable
    // only this amount can be taken by the banker (junior)
    // it only increases after the senior tranche debt has been paid out
    banker_bucket += amount;
  }

  // allows the withdrawal of the banker_bucket
  // which only contains the waterfall amount after repayments
  function withdraw() external onlyBanker {
    require(block.timestamp > timelock, "you have to wait the for timelock before withdrawal");
    require(banker_bucket > 0, "nothing to withdraw");

    USD.safeTransfer(banker, banker_bucket);
    banker_bucket = 0;
  }

  // INTERNAL HELPERS //

  function calculateSenior(uint junior_amount) internal view returns(uint) {
    return ratio * junior_amount / PRECISION;
  }

  function calculateRatio() internal view returns(uint) {
    return PRECISION * senior_tranche_book_value / junior_tranche_book_value;
  }

  function SWEEPtoUSD(uint amount, uint price) internal view returns(uint) {
    return (10 ** missing_decimals) * PRECISION * amount / price;
  }

  function USDtoSWEEP(uint amount, uint price) internal view returns(uint) {
    return amount * price / ((10 ** missing_decimals) * PRECISION);
  }

  function ratioFromPercentage(uint percentage) internal pure returns(uint) {
    return (100 * PRECISION - percentage) * PRECISION / percentage;
  }


  // GETTERS //

  function getJuniorPercentage() external view returns(uint) {
    return 100 * PRECISION * PRECISION / (ratio + PRECISION);
  }

  function getJuniorTrancheValue() external view returns(uint) {
    uint sweep_loan_value = sweep_borrowed * SWEEP.amm_price() / SWEEP.decimals();
    return current_asset_value - sweep_loan_value;
  }

  // SETTERS //

  function setCurrentAssetValue(uint _asset_value) external onlyBanker {
    current_asset_value = _asset_value;
    valuation_time = block.timestamp;
  }

  function setProtocolSpread(uint _protocol_spread) external onlyOwner {
    protocol_spread = _protocol_spread;
  }

  function setTimelock(uint256 _timelock) external onlyOwner {
    timelock = _timelock;
  }

  function setTimelockDays(uint256 _timelock_days) external onlyOwner {
    timelock_days = _timelock_days * SECONDS_PER_DAY;
  }

  function reOpen() external onlyOwner {
    open = true;
  }

  function dollarBalances() public view returns (uint256 sweep_val_e18, uint256 collat_val_e18) {
    uint256 sweep_decimals = SWEEP.decimals();
    sweep_val_e18 = SWEEP.balanceOf(address(this)) / (sweep_decimals);

    uint256 collateral_decimals = USD.decimals();
    collat_val_e18 = USD.balanceOf(address(this)) / (collateral_decimals);
  }

}

