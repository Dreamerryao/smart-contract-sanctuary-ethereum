import "./interfaces/IShinikiMarketplaceCore.sol";

contract ShinikiProxy is Ownable, ReentrancyGuard {
    address public OPERATOR;
    address public SHINIKI;

    bytes32 constant ORDER_TYPEHASH =
        keccak256(
            "Order(address maker,Asset makeAsset,address taker,Asset takeAsset,uint256 salt,uint256 start,uint256 end,bytes4 dataType,bytes data)Asset(AssetType assetType,uint256 value,address token,uint256 tokenId)AssetType(bytes4 assetClass,bytes data)"
        );
    bytes32 constant ASSET_TYPE_TYPEHASH =
        keccak256("AssetType(bytes4 assetClass,bytes data)");
    bytes32 constant ASSET_TYPEHASH =
        keccak256(
            "Asset(AssetType assetType,uint256 value,address token,uint256 tokenId)AssetType(bytes4 assetClass,bytes data)"
        );
    bytes32 constant BATCH_ORDER_TYPEHASH =
        keccak256(
            "BatchOrder(Order orderLeft, bytes signatureLeft,Order orderRight)Order(address maker,Asset makeAsset,address taker,Asset takeAsset,uint256 salt,uint256 start,uint256 end,bytes4 dataType,bytes data)Asset(AssetType assetType,uint256 value,address token,uint256 tokenId)AssetType(bytes4 assetClass,bytes data)"
        );
    bytes32 constant FUNCTION_TYPEHASH =
        keccak256(
            "MatchBatchOrders(BatchOrder[] memory batchOrder)BatchOrder(Order orderLeft, bytes signatureLeft,Order orderRight)Order(address maker,Asset makeAsset,address taker,Asset takeAsset,uint256 salt,uint256 start,uint256 end,bytes4 dataType,bytes data)Asset(AssetType assetType,uint256 value,address token,uint256 tokenId)AssetType(bytes4 assetClass,bytes data)"
        );
    bytes4 constant FUNCTION_RUN_TYPEHASH = bytes4(keccak256("run(bytes)"));

    bytes4 constant FUNCTION_TEST_TYPEHASH =
        bytes4(keccak256("test(uint256 _data)"));

    modifier callIsShinikiSwap() {
        require(msg.sender == OPERATOR, "caller not allowed");
        _;
    }

    constructor(address operator, address proxyShiniki) {
        OPERATOR = operator;
        SHINIKI = proxyShiniki;
    }

    function run(bytes memory _data) public payable nonReentrant {
        (bool success, ) = SHINIKI.call{value: msg.value}(_data);
        require(success, "failed to call");
    }

    function test(uint256 _data) public payable {
        require(_data == 2, "failed to call");
    }

    function hash(IShinikiMarketplaceCore.AssetType memory assetType) internal pure returns (bytes32) {
        return
            keccak256(
                abi.encode(
                    ASSET_TYPE_TYPEHASH,
                    assetType.assetClass,
                    keccak256(assetType.data)
                )
            );
    }

    function hashAsset(IShinikiMarketplaceCore.Asset memory asset) internal pure returns (bytes32) {
        return
            keccak256(
                abi.encode(
                    ASSET_TYPEHASH,
                    hash(asset.assetType),
                    asset.value,
                    asset.token,
                    asset.tokenId
                )
            );
    }

    function hashOrder(IShinikiMarketplaceCore.Order memory order) public pure returns (bytes32) {
        return
            keccak256(
                abi.encode(
                    ORDER_TYPEHASH,
                    order.maker,
                    hashAsset(order.makeAsset),
                    order.taker,
                    hashAsset(order.takeAsset),
                    order.salt,
                    order.start,
                    order.end,
                    order.dataType,
                    keccak256(order.data)
                )
            );
    }

    function hashBatchOrder(IShinikiMarketplaceCore.BatchOrder memory _dataBatchOrder)
        internal
        pure
        returns (bytes32)
    {
        return
            keccak256(
                abi.encode(
                    BATCH_ORDER_TYPEHASH,
                    hashOrder(_dataBatchOrder.orderLeft),
                    keccak256(_dataBatchOrder.signatureLeft),
                    hashOrder(_dataBatchOrder.orderRight)
                )
            );
    }

    function hashBatchOrders(IShinikiMarketplaceCore.BatchOrder[] memory _dataBatchOrders)
        public
        pure
        returns (bytes32)
    {
        bytes32[] memory hashedBatchOrders = new bytes32[](
            _dataBatchOrders.length
        );
        for (uint256 i = 0; i < hashedBatchOrders.length; i++) {
            hashedBatchOrders[i] = hashBatchOrder(_dataBatchOrders[i]);
        }
        return keccak256(abi.encodePacked(hashedBatchOrders));
    }

    function hash(IShinikiMarketplaceCore.BatchOrder[] memory _dataBatchOrders)
        external
        pure
        returns (bytes32)
    {
        return
            keccak256(abi.encodeWithSelector(
                IShinikiMarketplaceCore.matchBatchOrders.selector,
                _dataBatchOrders
            ));
    }

    function hashDemo(IShinikiMarketplaceCore.BatchOrder[] memory _dataBatchOrders)
        external
        pure
        returns (bytes memory data1, bytes memory data2)
    {
        data1 = abi.encodeWithSelector(
                IShinikiMarketplaceCore.matchBatchOrders.selector,
                _dataBatchOrders
            );
        data2 =  abi.encode(
               FUNCTION_TYPEHASH,
                hashBatchOrders(_dataBatchOrders)
            );
            return (data1, data2);
        
    }

    function hashProxy(bytes memory _data)
        external
        pure
        returns (bytes memory)
    {
        return abi.encodeWithSelector(FUNCTION_RUN_TYPEHASH, _data);
    }

    function hashTest(uint256 _data) external pure returns (bytes memory) {
        return abi.encodeWithSelector(FUNCTION_TEST_TYPEHASH, _data);
    }

    // function decodeData(bytes memory _data)
    //     internal
    //     pure
    //     returns (
    //         Order memory orderLeft,
    //         Order memory orderRight,
    //         bytes memory signatureLeft
    //     )
    // {
    //     Data memory data = abi.decode(_data, (Data));
    //     orderLeft = decodeOrder(data.orderLeft);
    //     orderRight = decodeOrder(data.orderRight);
    //     signatureLeft = data.signatureLeft;
    // }

    // function decodeOrder(bytes memory _data)
    //     internal
    //     pure
    //     returns (Order memory)
    // {
    //     return abi.decode(_data, (Order));
    // }
}

