pragma solidity ^0.8.0;

import "IERC20.sol";
import "IERC1155.sol";

contract Bank {
    address public owner;
    mapping(address => bool) public isKYCAddress;
    IERC20 money = IERC20(0xA7eF12C499991D165568f76F84E72B33Cb3C2dEa);
    
    //Each person may only have 1 loan at a time
    struct loan {
        uint256 loan_value;
        address nft_address;
        uint256 id;
    }

    mapping(address => loan) loan_details;

    constructor() {
        owner = msg.sender;
    }

    modifier onlyOwner() {
        require( msg.sender == owner, "You are not the owner");
        _;
    }

    function addToKYC(address _address) public onlyOwner {
        isKYCAddress[_address] = true;
    }

    function removeFromKYC(address _address) public onlyOwner {
        isKYCAddress[_address] = false;
    }


    function viewLoanDetails() public view returns (uint256, address, uint256) {
        return (loan_details[msg.sender].loan_value, loan_details[msg.sender].nft_address, loan_details[msg.sender].id);
    }

    //Only allows 1 of the ERC1155 to be used as collateral
    function loanNFT(address _NFTaddress, uint256 id, uint256 loan_value) public {
        require(isKYCAddress[msg.sender] == true, "Please complete KYC");
        require(loan_value > 0, "Loan value must be greater than 0");
        require(money.balanceOf(address(this)) >= loan_value, "Bank has insufficient funds");
        require(loan_details[msg.sender].loan_value == 0, "This user has an outstanding loan");
        loan_details[msg.sender].loan_value = loan_value;
        loan_details[msg.sender].nft_address = _NFTaddress;
        loan_details[msg.sender].id = id;

        IERC1155 NFTaddress = IERC1155(_NFTaddress);
        NFTaddress.safeTransferFrom(msg.sender, address(this), id, 1, "");
        money.transfer(msg.sender, loan_value);
    }

    function repayLoan(uint256 repayment_amount) public {
        require(loan_details[msg.sender].loan_value != 0, "No outstanding loan");
        require(loan_details[msg.sender].loan_value == repayment_amount, "Incorrect repayment amount");
        address _NFTaddress = loan_details[msg.sender].nft_address;
        uint256 id = loan_details[msg.sender].id;
        delete loan_details[msg.sender];

        IERC1155 NFTaddress = IERC1155(_NFTaddress);
        money.transferFrom(msg.sender, address(this), repayment_amount);
        NFTaddress.safeTransferFrom(address(this), msg.sender, id, 1, "");
    }
}

