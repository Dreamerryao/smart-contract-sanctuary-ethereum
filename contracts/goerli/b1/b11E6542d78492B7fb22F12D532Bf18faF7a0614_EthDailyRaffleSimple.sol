pragma solidity ^0.8.7;






contract EthDailyRaffleSimple is VRFConsumerBaseV2, ConfirmedOwner {
    using SafeMath for uint256;
    ////////// CHAINLINK VRF v2 /////////////////
    bytes32 internal keyHash; // chainlink
  
    //Raffle ID to entries
    mapping(uint256 => uint256[]) public entries;
    //Raffle ID to (Entry index to user address)
    mapping(uint256 => mapping(uint256 => address)) entryIndexes;
    //Raffle ID to Raffle Struct
    mapping(uint256 => RaffleInfo) public raffles;
    //Raffle ID to Amount Raised
    mapping(uint256 => uint256) public amountRaised;
    //Request ID to RaffleID
    mapping(uint256 => uint256) public chainlinkRaffleInfo;
    //Raffle ID to Random Number generated from Chainlink
    mapping(uint256 => uint256) public raffleRandomNumber;
    //Banned Addresses
    mapping(address => bool) public bannedUsers;
    address platformAddress = 0x4A2e2e750cB9fC6c6cd085269Ceb52Fc79e978c7;
    uint256 raffleCount = 0;
    

    // Your subscription ID.
    uint64 s_subscriptionId;
    uint32 callBackGas = 200000;
    VRFCoordinatorV2Interface COORDINATOR;

    struct RaffleInfo {
        uint256 id; // raffleId
        uint256 entryPrice; //Raffle entry price
        address winner;
        bool live;
        uint256 minimumDrawAmount;
        bool winnerSelected;
    }

    struct PriceStructure {
        uint48 numEntries;
        uint256 price;
    }

    event RaffleCreated(uint256 indexed _id, uint256 _entryPrice, uint256 _minimumVal);
    event RaffleBuyEntry(uint256 indexed _id, uint256 _amount, uint256 _bonus, uint256 _val);
    event PriceTransfered(uint256 indexed _id,address _address, uint256 _amount, uint256 _platformFunds);
    event PickingWinner(uint256 indexed _id, uint256 _requestId);
    constructor(
        uint64 subscriptionId,
        address coordinator,
        bytes32 hash
    ) VRFConsumerBaseV2(coordinator) ConfirmedOwner(msg.sender) {
        COORDINATOR = VRFCoordinatorV2Interface(coordinator);
        s_subscriptionId = subscriptionId;
        keyHash = hash;
    }

    function setPlatformAddress(address _val) public onlyOwner {
        platformAddress = _val;
    }

    function reInitiateChainlink(
        uint64 subscriptionId,
        address coordinator,
        bytes32 hash
    ) public onlyOwner {
        COORDINATOR = VRFCoordinatorV2Interface(coordinator);
        s_subscriptionId = subscriptionId;
        keyHash = hash;
    }

    function callVRFAndGetRequestId() internal returns (uint256 requestId) {
        uint256 result = COORDINATOR.requestRandomWords(
            keyHash,
            s_subscriptionId,
            3,
            callBackGas,
            1
        );
        return result;
    }

    function changeCallBackGas(uint32 val) public onlyOwner {
        callBackGas = val;
    }

  

    function getRandomNumber(uint256 _raffleId, uint256 _requestId) internal {
        chainlinkRaffleInfo[_requestId] = _raffleId;
    }

    function createRaffle(uint256 entryPrice, uint256 minimumDrawAmount) external onlyOwner {
        require(entryPrice > 0, "Entry price should be more than 0");
        raffleCount = raffleCount.add(1);
        RaffleInfo memory info = RaffleInfo({
            id: raffleCount,
            entryPrice: entryPrice,
            live: true,
            winner: 0x0000000000000000000000000000000000000000,
            minimumDrawAmount:minimumDrawAmount,
            winnerSelected:false
           
        });
        raffles[raffleCount] = info;
        emit RaffleCreated(raffleCount,entryPrice,minimumDrawAmount);
    }

    function getBonusEntries(uint256 numberOfEntries)
        internal
        pure
        returns (uint256)
    {
        if (numberOfEntries > 0 && numberOfEntries < 100) {
            return numberOfEntries;
        } else if (numberOfEntries >= 100 && numberOfEntries < 200) {
            return numberOfEntries + 50;
        } else if (numberOfEntries >= 200 && numberOfEntries < 300) {
            return numberOfEntries + 50;
        } else if (numberOfEntries >= 300 && numberOfEntries < 400) {
            return numberOfEntries + 50;
        } else if (numberOfEntries >= 400 && numberOfEntries < 500) {
            return numberOfEntries + 50;
        } else if (numberOfEntries >= 500 && numberOfEntries < 600) {
            return numberOfEntries + 50;
        } else {
            return numberOfEntries;
        }
    }

    function banUser(address _address, bool _val) public onlyOwner {
        bannedUsers[_address] = _val;
    }

    function buyEntry(uint256 _raffleID, uint256 _howManyEntries)
        public
        payable
    {
        require(_raffleID != 0, "Invalid Raffle ID");
        require(_howManyEntries != 0, "Minumum 1 entry is required");
        require(!bannedUsers[msg.sender], "User is banned");
        RaffleInfo memory info = raffles[_raffleID];
        require(info.entryPrice > 0, "Raffle is not initiated Yet");
        require(info.live, "Raffle has ended");
        require(
            msg.value >= (info.entryPrice * _howManyEntries),
            "Insufficient funds"
        );

        if (entries[_raffleID].length == 0) {
            entries[_raffleID].push(getBonusEntries(_howManyEntries));
        } else {
            entries[_raffleID].push(
                entries[_raffleID][entries[_raffleID].length - 1] +
                    getBonusEntries(_howManyEntries)
            );
        }
        entryIndexes[_raffleID][entries[_raffleID].length - 1] = msg.sender;
        amountRaised[_raffleID] += msg.value;
        emit RaffleBuyEntry(_raffleID,_howManyEntries, getBonusEntries(_howManyEntries), msg.value );
    }

    function transferWinnerFunds(uint256 _raffleID, address _winner) internal {
        uint256 funds = amountRaised[_raffleID];
        require(funds > 0, "No funds to transfer");
        uint256 winnerFunds = funds.mul(75).div(100);
        uint256 platformFunds = funds.mul(25).div(100);
        (bool hq, ) = payable(_winner).call{value: winnerFunds}("");
        require(hq);
        (bool hf, ) = payable(platformAddress).call{value: platformFunds}("");
        require(hf);

        emit PriceTransfered(_raffleID,_winner, winnerFunds, platformFunds);
    }

    function pickWinner(uint256 _raffleID, bool _force) public onlyOwner{
        require(_raffleID != 0, "Invalid Raffle ID");
        RaffleInfo memory info = raffles[_raffleID];
        require(!info.winnerSelected, "Winner Already Selected");
        if(!_force){
            require(amountRaised[_raffleID] >= info.minimumDrawAmount, "Minimum Draw amount not reached");
        }
     
        require(entries[_raffleID].length > 0, "Entries cannot be zero");
        uint256 requestId = callVRFAndGetRequestId();
        getRandomNumber(_raffleID, requestId);
        emit PickingWinner(_raffleID, requestId);
    }

    function getEntries(uint256 id) public view returns (uint256[] memory) {
        return entries[id];
    }

    function fulfillRandomWords(
        uint256 _requestId,
        uint256[] memory _randomWords
    ) internal override {
        // randomness is the actual random number. Now extract from the aux map the original param id of the call
        uint256 raffleId = chainlinkRaffleInfo[_requestId];
        // save the random number on the map with the original id as key
        raffleRandomNumber[raffleId] =
            (_randomWords[0] %
                entries[raffleId][entries[raffleId].length - 1]) +
            1;
        uint256 winnerIndex = findUpperBound(
            entries[raffleId],
            raffleRandomNumber[raffleId]
        );
        address winner = entryIndexes[raffleId][winnerIndex];
        RaffleInfo storage info = raffles[raffleId];
        info.winner = winner;
        info.live = false;
        info.winnerSelected = true;
       
        transferWinnerFunds(raffleId, winner);
    }

  

    function findUpperBound(uint256[] storage array, uint256 element)
        internal
        view
        returns (uint256)
    {
        if (array.length == 0) {
            return 0;
        }

        uint256 low = 0;
        uint256 high = array.length;

        while (low < high) {
            uint256 mid = Math.average(low, high);

            // Note that mid will always be strictly less than high (i.e. it will be a valid array index)
            // because Math.average rounds down (it does integer division with truncation).
