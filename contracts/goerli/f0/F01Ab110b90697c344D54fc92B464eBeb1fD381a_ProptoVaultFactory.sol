/**
 * the Vault is a contract that can lock a batch of nfts and transfer them together
 */
contract ProptoVault is IProptoVault, ERC20, Ownable {
    uint256 public constant TOTALSUPPLY = 1000000;

    using SafeMath for uint256;

    address private _creator;

    uint256 private _vaultId;

    string private _vaultName;

    uint256 private _inVaultNum;

    string private _uri;

    using Counters for Counters.Counter;

    Counters.Counter private _indexCounter;

    bool private _expired;

    uint256 private _vendingMachinePrice;

    address private _vendingMachinePaymentToken;

    address private _vendingMachinePaymentReceiver;

    uint256 private _vendingMachineInitialAmount;

    bool private _settled;

    uint256 private _settlementAmount;

    address private _settlementContract;

    address private proptoVaultFactoryContract;

    mapping(uint256 => inVaultAsset) private _inVaultAssets;

    constructor(
        uint256 vaultId_,
        string memory vaultName_,
        string memory uri_,
        string memory name,
        string memory symbol,
        address creator_
    ) ERC20(name, symbol) {
        _vaultId = vaultId_;
        _vaultName = vaultName_;
        _uri = uri_;
        _creator = creator_;
        proptoVaultFactoryContract = msg.sender;
        _mint(msg.sender, TOTALSUPPLY * 10**decimals());
    }

    function vaultId() public view returns (uint256) {
        return _vaultId;
    }

    function vaultName() public view returns (string memory) {
        return _vaultName;
    }

    function uri() public view returns (string memory) {
        return _uri;
    }

    function settled() public view returns (bool) {
        return _settled;
    }

    function expired() public view returns (bool) {
        return _expired;
    }

    function creator() public view returns (address) {
        return _creator;
    }

    function decimals()
        public
        pure
        override(ERC20, IERC20Metadata)
        returns (uint8)
    {
        return 6;
    }

    /**
     * get the number of nfts inside the Vault
     */
    function getInVaultNum() public view returns (uint256) {
        return _inVaultNum;
    }

    function getInVaultAsset(uint256 index)
        public
        view
        returns (inVaultAsset memory)
    {
        return _inVaultAssets[index];
    }

    function getInVaultAssetCurrentIndex() public view returns (uint256) {
        return _indexCounter.current();
    }

    function vendingMachineInitialAmount() public view returns (uint256) {
        return _vendingMachineInitialAmount;
    }

    function vendingMachinePrice() public view returns (uint256) {
        return _vendingMachinePrice;
    }

    function vendingMachinePaymentToken() public view returns (address) {
        return _vendingMachinePaymentToken;
    }

    /// @dev lock NFTs and create a new Vault for these nfts
    /// @notice only support erc721 or erc1155 nfts for now
    /// @notice need nft token approve first
    /// @param from nft's owner address
    /// @param tokens nft contract addresses
    /// @param tokenIDs nft tokenIds
    function lockNFTsFrom(
        address from,
        address[] memory tokens,
        uint256[] memory tokenIDs,
        uint256[] memory amounts
    ) public {
        _lockNFTs(from, tokens, tokenIDs, amounts);
    }

    function lockNFTs(
        address[] memory tokens,
        uint256[] memory tokenIDs,
        uint256[] memory amounts
    ) public {
        _lockNFTs(msg.sender, tokens, tokenIDs, amounts);
    }

    /**
     * do real lock actions
     */
    function _lockNFTs(
        address from,
        address[] memory tokens,
        uint256[] memory tokenIDs,
        uint256[] memory amounts
    ) private {
        require(tokens.length == tokenIDs.length, "args not fit");
        for (uint8 i = 0; i < tokens.length; i++) {
            if (
                ERC165(tokens[i]).supportsInterface(
                    type(IERC721).interfaceId
                ) &&
                (IERC721(tokens[i]).getApproved(tokenIDs[i]) == address(this) ||
                    IERC721(tokens[i]).isApprovedForAll(from, address(this)))
            ) {
                IERC721(tokens[i]).safeTransferFrom(
                    from,
                    address(this),
                    tokenIDs[i]
                );
            } else if (
                ERC165(tokens[i]).supportsInterface(
                    type(IERC1155).interfaceId
                ) && IERC1155(tokens[i]).isApprovedForAll(from, address(this))
            ) {
                IERC1155(tokens[i]).safeTransferFrom(
                    from,
                    address(this),
                    tokenIDs[i],
                    amounts[i],
                    "0x0"
                );
            }
        }
    }

    function lockERC20sFrom(
        address from,
        address[] memory tokens,
        uint256[] memory amounts
    ) public {
        _lockERC20s(from, tokens, amounts);
    }

    function lockERC20s(address[] memory tokens, uint256[] memory amounts)
        public
    {
        _lockERC20s(msg.sender, tokens, amounts);
    }

    function _lockERC20s(
        address from,
        address[] memory tokens,
        uint256[] memory amounts
    ) private {
        require(tokens.length == amounts.length, "args not fit");
        for (uint8 i = 0; i < tokens.length; i++) {
            IERC20Metadata(tokens[i]).transferFrom(
                from,
                address(this),
                amounts[i]
            );
            uint256 index = _indexCounter.current();
            _inVaultAssets[index] = inVaultAsset(
                index,
                tokens[i],
                0,
                from,
                false,
                0,
                amounts[i]
            );

            _inVaultNum++;
            _indexCounter.increment();

            emit AssetIn(index, tokens[i], 0, from, 0, amounts[i]);
        }
    }

    /**
     * unlock the nft inside a Vault to some address by the Vault owner only
     */
    function unlockAsset(address to, uint8 assetIndex) public onlyOwner {
        inVaultAsset memory iva = _inVaultAssets[assetIndex];
        if (iva.assetType == 0) {
            IERC20Metadata(iva.contractAddress).transfer(to, iva.assetAmount);
        } else if (iva.assetType == 1) {
            IERC721(iva.contractAddress).safeTransferFrom(
                address(this),
                to,
                iva.tokenId
            );
        } else if (iva.assetType == 2) {
            IERC1155(iva.contractAddress).safeTransferFrom(
                address(this),
                to,
                iva.tokenId,
                iva.assetAmount,
                ""
            );
        }

        _inVaultAssets[assetIndex].redeemed = true;
        _inVaultNum--;

        emit AssetOut(_vaultId, assetIndex, to);
    }

    function openVendingMachine(
        uint256 amount,
        uint256 price,
        address paymentToken,
        address paymentReceiver
    ) public onlyOwner {
        require(_vendingMachineInitialAmount == 0, "already opened");
        _vendingMachinePrice = price;
        _vendingMachineInitialAmount = amount;
        _vendingMachinePaymentToken = paymentToken;
        _vendingMachinePaymentReceiver = paymentReceiver;
        transferFrom(msg.sender, address(this), amount);
    }

    function closeVendingMachine() public onlyOwner {
        uint256 amountleft = balanceOf(address(this));
        require(amountleft > 0, "nothing left");
        transfer(msg.sender, amountleft);
    }

    function coinIntoSlot(uint256 amount) public {
        uint256 payment;

        require(
            balanceOf(address(this)) >= amount,
            "shelf quantity not enough to sell"
        );
        payment = _vendingMachinePrice.mul(amount).div(10**decimals());
        require(payment > 0, "price is too low");

        IERC20Metadata(_vendingMachinePaymentToken).transferFrom(
            msg.sender,
            _vendingMachinePaymentReceiver,
            payment
        );
        _transfer(address(this), msg.sender, amount);
    }

    function VTokenHolderAnnounceOwner() public {
        require(balanceOf(msg.sender) == totalSupply(), "vtoken not enough");
        _burn(msg.sender, totalSupply());
        _transferOwnership(msg.sender);
        _expired = true;
    }

    function makeSettlement(uint256 amount, address contractAddress)
        public
        onlyOwner
    {
        require(
            IERC20Metadata(contractAddress).balanceOf(address(this)) == amount,
            "settlement token not enough"
        );
        uint256 protocolFee = (amount * 4) / 100;
        IERC20Metadata(contractAddress).transfer(
            IProptoVaultFactory(proptoVaultFactoryContract)
                .protocolFeeReceiver(),
            protocolFee
        );
        _settlementAmount = IERC20Metadata(contractAddress).balanceOf(
            address(this)
        );
        _settlementContract = contractAddress;
        _settled = true;
        _expired = true;
    }

    function withdrawSettlementAmount(address taker)
        public
        view
        returns (uint256)
    {
        return _settlementAmount.mul(balanceOf(taker)).div(totalSupply());
    }

    function withdrawSettlement() public {
        uint256 amount = withdrawSettlementAmount(msg.sender);
        _burn(msg.sender, balanceOf(msg.sender));
        IERC20Metadata(_settlementContract).transfer(msg.sender, amount);
    }

    function withdrawSettlementTo(address to) public onlyOwner {
        uint256 amount = withdrawSettlementAmount(to);
        _burn(to, balanceOf(to));
        IERC20Metadata(_settlementContract).transfer(to, amount);
    }

    function owner()
        public
        view
        override(IProptoVault, Ownable)
        returns (address)
    {
        return super.owner();
    }

    function transferOwnership(address newOwner)
        public
        override(IProptoVault, Ownable)
        onlyOwner
    {
        super.transferOwnership(newOwner);
    }

    function onERC721Received(
        address operator,
        address from,
        uint256 tokenId,
        bytes calldata
    ) external returns (bytes4) {
        uint256 index = _indexCounter.current();
        _inVaultAssets[index] = inVaultAsset(
            index,
            msg.sender,
            tokenId,
            from,
            false,
            1,
            1
        );

        _inVaultNum++;
        _indexCounter.increment();

        emit AssetIn(index, msg.sender, tokenId, operator, 1, 1);

        return type(IERC721Receiver).interfaceId;
    }

    function onERC1155Received(
        address operator,
        address from,
        uint256 tokenId,
        uint256 value,
        bytes calldata
    ) external returns (bytes4) {
        uint256 index = _indexCounter.current();
        _inVaultAssets[index] = inVaultAsset(
            index,
            msg.sender,
            tokenId,
            from,
            false,
            2,
            value
        );

        _inVaultNum++;
        _indexCounter.increment();

        emit AssetIn(index, msg.sender, tokenId, operator, 2, value);

        return type(IERC1155Receiver).interfaceId;
    }
}

