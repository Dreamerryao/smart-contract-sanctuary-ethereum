pragma solidity ^0.8.12;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/utils/Strings.sol";
import "../Interfaces/IProptoVaultFactory.sol";
import "./ProptoVault.sol";

contract ProptoVaultFactory is IProptoVaultFactory, Ownable {
    using Counters for Counters.Counter;

    Counters.Counter private _indexCounter;

    address private _protocolFeeReceiver;

    mapping(uint256 => address) createdVaults;

    constructor(address protocolFeeReceiver_) {
        _protocolFeeReceiver = protocolFeeReceiver_;
    }

    function protocolFeeReceiver() public view returns (address) {
        return _protocolFeeReceiver;
    }

    function createVault(
        string memory vaultname,
        string memory uri,
        address creator
    ) public returns (address tokenAddress) {
        _indexCounter.increment();
        uint256 index = _indexCounter.current();

        string memory name = Strings.toString(index);
        string memory symbol = string.concat("V#", name);
        name = string.concat("V-Token(#", name);
        name = string.concat(name, ")");

        bytes memory vaultnamebytes = bytes(vaultname);
        if (vaultnamebytes.length == 0) {
            vaultname = name;
        }

        if (creator == address(0)) {
            creator = msg.sender;
        }

        ProptoVault vault = new ProptoVault(
            index,
            vaultname,
            uri,
            name,
            symbol,
            creator
        );
        vault.transfer(msg.sender, vault.totalSupply());
        vault.transferOwnership(msg.sender);
        tokenAddress = address(vault);
        createdVaults[index] = tokenAddress;
        emit ProptoVaultCreated(creator, index, tokenAddress, vaultname, uri);
    }

    function getVaultContract(uint256 index) public view returns (address) {
        return createdVaults[index];
    }
}

