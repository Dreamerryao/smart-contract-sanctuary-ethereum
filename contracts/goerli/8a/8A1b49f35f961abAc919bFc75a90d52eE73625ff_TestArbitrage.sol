            thisPath[1] = output;
            // amountOut = UniswapV2Library.getAmount(router.factory, lastAmountIn, [input, output]);
            uint[] memory amountOut = router.swapExactTokensForTokens(lastAmountIn, 0, thisPath, to, deadline);
            lastAmountIn = amountOut[0];
        }
    }
