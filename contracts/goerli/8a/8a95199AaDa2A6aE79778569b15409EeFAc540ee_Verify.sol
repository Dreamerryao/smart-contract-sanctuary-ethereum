pragma solidity ^0.8.0;

import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "@openzeppelin/contracts/utils/Strings.sol";

contract Verify {
    
    /// @notice Checks weather the '_caller' is message signer or not
    function isValidSigner(uint _amount1, uint _amount2, address _caller, bytes memory _signature) external pure returns(bool) {
        bytes32 _messageHash;
        if(_amount2 == 0) _messageHash = messageHash1(_amount1);
        else _messageHash = messageHash2(_amount1, _amount2);
        address _signerAddress = messageSigner(_messageHash, _signature);

        return _signerAddress == _caller;
    }
    
    /// @notice Returns the hash of the message
    function messageHash1(uint _amount) private pure returns(bytes32) {
        bytes32 _message = keccak256(abi.encodePacked("Please sign the message for claiming the reward amount of ", Strings.toString(_amount), " tokens!"));
        bytes32 _messageHash = keccak256(abi.encodePacked("\x19Ethereum Signed Message:\n", Strings.toString(_message.length), _message));
        return _messageHash;
    }
    
    function messageHash2(uint _pathFundAmuont, uint _bnbAmount) private pure returns(bytes32) {
        bytes32 _message = keccak256(abi.encodePacked("You will receive ", Strings.toString(_pathFundAmuont), " amount of Path Fund tokens for ", Strings.toString(_bnbAmount)," amount of BNB"));
        bytes32 _messageHash = keccak256(abi.encodePacked("\x19Ethereum Signed Message:\n", Strings.toString(_message.length), _message));
        return _messageHash;
    }
    
    /// @notice Returns the address of the message signer
    function messageSigner(bytes32 _messageHash, bytes memory _signature) private pure returns(address) {
        address _signerAddress = ECDSA.recover(_messageHash, _signature);
        return _signerAddress;
    }
}

