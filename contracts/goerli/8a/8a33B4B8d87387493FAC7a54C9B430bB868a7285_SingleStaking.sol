// Note that it's ownable and the owner wields tremendous power. The ownership
// will be transferred to a governance smart contract once THENODE is sufficiently
// distributed and the community can show to govern itself.
// Have fun reading it. Hopefully it's bug-free. God bless.
contract SingleStaking is Ownable, ReentrancyGuard {
    using SafeMath for uint256;

    // Info of each user.
    struct UserInfo {
        uint256 amount;         // How many LP tokens the user has provided.
        uint256 rewardLockedUp;  // Reward locked up.
        uint256 stakedTime;     // Staked timestamp.
        //
        // We do some fancy math here. Basically, any point in time, the amount of THENODEs
        // entitled to a user but is pending to be distributed is:
        //
        // Whenever a user deposits or withdraws LP tokens to a pool. Here's what happens:
        //   1. User receives the pending reward sent to his/her address.
        //   2. User's `amount` gets updated.
    }

    // Info of each pool.
    struct PoolInfo {
        IERC20Modified lpToken;           // Address of LP token contract.
        uint256 lastRewardStamp;  // Last block timestamp that THENODEs distribution occurs.
        uint256 totalDeposits;    // Total tokens deposited in the pool.
        uint256 totalRewarded;     // Total tokens rewarded in the pool.
        uint256 stakingAPY;
    }

    // The THENODE TOKEN!
    THENODEPROTOCOL public thenode;
    // Bonus muliplier for early thenode makers.
    uint256 public constant BONUS_MULTIPLIER = 1;

    // Info of each pool.
    PoolInfo[] public poolInfo;
    // Info of each user that stakes LP tokens.
    mapping(uint256 => mapping(address => UserInfo)) public userInfo;

    // The block timestamp when THENODE mining starts
    uint256 public startStamp;
    // Total locked up rewards
    uint256 public totalLockedUpRewards;


    event Deposit(address indexed user, uint256 indexed pid, uint256 amount);
    event Withdraw(address indexed user, uint256 indexed pid, uint256 amount);
    event EmergencyWithdraw(address indexed user, uint256 indexed pid, uint256 amount);

    constructor(
        THENODEPROTOCOL _thenode,
        uint256 _startStamp
    ) {
        thenode = _thenode;
        startStamp = _startStamp;
    }

    function poolLength() external view returns (uint256) {
        return poolInfo.length;
    }

    // Add a new lp to the pool. Can only be called by the owner.
    // XXX DO NOT add the same LP token more than once. Rewards will be messed up if you do.
    function add(IERC20Modified _lpToken, uint256 _stakingAPY, bool _withUpdate) public onlyOwner {
        if (_withUpdate) {
            massUpdatePools();
        }
        uint256 lastRewardStamp = block.timestamp > startStamp ? block.timestamp : startStamp;
        poolInfo.push(PoolInfo({
            lpToken: _lpToken,
            lastRewardStamp: lastRewardStamp,
            totalDeposits: 0,
            totalRewarded: 0,
            stakingAPY: _stakingAPY
        }));
    }

    // Return reward multiplier over the given _from to _to timestamp.
    function getMultiplier(uint256 _from, uint256 _to) public pure returns (uint256) {
        return _to.sub(_from).mul(BONUS_MULTIPLIER);
    }

    // View function to see pending THENODEs on frontend.
    function pendingTHENODE(uint256 _pid, address _user) external view returns (uint256) {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][_user];

        uint256 lpSupply = pool.totalDeposits;
        uint256 pending;

        if (block.timestamp > pool.lastRewardStamp && lpSupply != 0) {
            pending = user.amount.mul(pool.stakingAPY).div(100).div(365).div(24).div(3600).mul(getMultiplier(pool.lastRewardStamp, block.timestamp));
        } else {
            pending = 0;
        }

        return pending.add(user.rewardLockedUp);
    }

    // Update reward variables for all pools. Be careful of gas spending!
    function massUpdatePools() public {
        uint256 length = poolInfo.length;
        for (uint256 pid = 0; pid < length; ++pid) {
            updatePool(pid);
        }
    }

    // Update reward variables of the given pool to be up-to-date.
    function updatePool(uint256 _pid) public {
        PoolInfo storage pool = poolInfo[_pid];
        if (block.timestamp <= pool.lastRewardStamp) {
            return;
        }

        uint256 lpSupply = pool.totalDeposits;
        if (lpSupply >= 0) {
            pool.lastRewardStamp = block.timestamp;
            return;
        }
    }

    // Deposit LP tokens to TokenStaking for THENODE allocation.
    function deposit(uint256 _pid, uint256 _amount) public nonReentrant {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        updatePool(_pid);

        uint256 pending = user.amount.mul(pool.stakingAPY).div(100).div(365).div(24).div(3600).mul(getMultiplier(pool.lastRewardStamp, block.timestamp));
        if (pending > 0 || user.rewardLockedUp > 0) {
            uint256 totalRewards = pending.add(user.rewardLockedUp);

            // reset lockup
            totalLockedUpRewards = totalLockedUpRewards.sub(user.rewardLockedUp);
            user.rewardLockedUp = 0;

            // send rewards
            thenode.mint(address(msg.sender), totalRewards);
            pool.totalRewarded = pool.totalRewarded.add(totalRewards);
        }

        if (_amount > 0) {
            thenode.burn(_amount.div(100));
            pool.lpToken.transferFrom(address(msg.sender), address(this), _amount.sub(_amount.div(100)));
            user.amount = user.amount.add(_amount.sub(_amount.div(100)));
            pool.totalDeposits = pool.totalDeposits.add(_amount.sub(_amount.div(100)));

            user.stakedTime = block.timestamp;
        }
        emit Deposit(msg.sender, _pid, _amount);
    }

    // Withdraw LP tokens from TokenStaking.
    function withdraw(uint256 _pid, uint256 _amount) public nonReentrant {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        require(user.amount >= _amount, "withdraw: not good");
        updatePool(_pid);

        uint256 pending = user.amount.mul(pool.stakingAPY).div(100).div(365).div(24).div(3600).mul(getMultiplier(pool.lastRewardStamp, block.timestamp));
        if (_amount > 0) {
            if (pending > 0 || user.rewardLockedUp > 0) {
                uint256 totalRewards = pending.add(user.rewardLockedUp);

                // reset lockup
                totalLockedUpRewards = totalLockedUpRewards.sub(user.rewardLockedUp);
                user.rewardLockedUp = 0;

                // send rewards
                thenode.mint(address(msg.sender), totalRewards);
                pool.totalRewarded = pool.totalRewarded.add(totalRewards);
            }
            
            pool.totalDeposits = pool.totalDeposits.sub(_amount);
            user.amount = user.amount.sub(_amount);
            thenode.burn(_amount.div(100));
            pool.lpToken.transfer(address(msg.sender), _amount.sub(_amount.div(100)));
        }
        emit Withdraw(msg.sender, _pid, _amount);
    }

    // Withdraw without caring about rewards. EMERGENCY ONLY.
    function emergencyWithdraw(uint256 _pid) public nonReentrant {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        uint256 amount = user.amount;
        user.amount = 0;
        user.rewardLockedUp = 0;
        user.stakedTime = 0;
        thenode.burn(amount.div(100));
        pool.lpToken.transfer(address(msg.sender), amount.sub(amount.div(100)));
        pool.totalDeposits = pool.totalDeposits.sub(amount);
        emit EmergencyWithdraw(msg.sender, _pid, amount);
    }

    // Safe thenode transfer function, just in case if rounding error causes pool to not have enough THENODE.
    function safeTHENODETransferFrom(address _from, address _to, uint256 _amount) internal {
        uint256 thenodeBal = thenode.balanceOf(_from);
        if (_amount > thenodeBal) {
            thenode.transferFrom(_from, _to, thenodeBal);
        } else {
            thenode.transferFrom(_from, _to, _amount);
        }
    }
}

