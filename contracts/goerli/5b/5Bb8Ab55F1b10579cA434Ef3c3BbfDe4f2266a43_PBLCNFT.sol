import "./Ownable.sol";
import "./SafeMath.sol";
import "./IERC1155.sol";
import "./ERC1155Holder.sol";
import "./ReentrancyGuard.sol";
import "./IERC20.sol";

contract PBLCNFT is Ownable, ERC1155Holder, ReentrancyGuard{
    using SafeMath for uint256;

    // storage
    /**
    * NFT contract address
    */
    IERC1155 public stakingNft;

    /**
    * wallet from where contract will transfer State NFT
    */
    address private adminwallet;

    /**
    * struct to hold the info of staked NFTs
    */
    struct nftInfo {
      uint256 tokenId; 
      address taker;
      uint256 time;
      uint256 amount;
    }

    // array to store nft transferred data
    nftInfo[] public withdrawn;
    /**
    * category like broze, silver, gold, platinum,. asigned a number
    */
    mapping (uint256 => uint256) public category;
    
    // events
    /**
    * events fire after every stake and unstake
    */
    event Claim(address indexed withdrawer, uint256 id, uint256 amount);
    event WithdrawEth(address indexed withdrawer);
    event WithdrawNft(address indexed withdrawer);
    event WithdrawToken(address indexed withdrawer, uint256 amount);


    constructor() {
      stakingNft = IERC1155(0x2b6E008FeAa5a84767e0A03402dc10A21Ce4E4C1);
      adminwallet = 0x4f125e835bbc9BbB77607C66dE6D0d32339B936c;
    }
    
    /**
      * Function to show the rewarding token's wallet
      */
    function rewardingWalletGet() public view returns (address){
      return adminwallet;
    }

    /**
      * setter for rewarding token's wallet address, it takes one wallet address
      * only owner can call this function
      */
    function changeRewardingTokenWallet(address newWallet) public onlyOwner {
      adminwallet = newWallet;
    }

    /**
      * internal Claim NFT function, it takes one NFT Id and its amount, and sign value v,rs
      */
    function ClaimNFT(uint256 timeStamp, uint256 id, uint256 amount, uint8 v, bytes32 r, bytes32 s) public {
      signVerification(adminwallet, _msgSender(), timeStamp, id, amount, v, r, s);
      withdrawn.push(nftInfo(id, _msgSender(), timeStamp, amount));
      stakingNft.safeTransferFrom(adminwallet, _msgSender(), id, amount, '');
      emit Claim(_msgSender(), id, amount);
    }

    /**
    * to verify sign if senderx
    */
    function signVerification (address admin, address recipient, uint256 deadline, uint256 id, uint256 amount, uint8 v, bytes32 r, bytes32 s) public view returns (bool){
      require(recipient == ecrecover(getSignedHash(keccak256(abi.encodePacked(this, admin, recipient, deadline, id, amount))), v, r, s), "Recipient Signature Is Invalid");
      return true;
    }
    
    function getSignedHash(bytes32 _messageHash) public pure returns(bytes32){
        return keccak256(abi.encodePacked("\x19Ethereum Signed Message:\n32", _messageHash));
    }

    /**
      * NFT contract address setter,  it takes one NFT contract address
      * only owner can call this function
      */
    function setNFTadress(IERC1155 nft) public onlyOwner {
        stakingNft = nft;
    }

    /**
      * NFT category setter,  it takes one NFT Id and one parameter as their base price to set
      * only owner can call this function
      */
    function setCategory(uint256 tokenId, uint256 basePrice) public onlyOwner {
        category[tokenId] = basePrice;
    }

    /**
      * withdraw tokens stuck in the smart contract, pass address of receiver and token address
      * only owner can call this function
      */
    function withdrawAnyToken(address _recipient, address _IERC20address, uint256 _amount) public onlyOwner returns(bool) {
        IERC20(_IERC20address).transfer(_recipient, _amount); //use of the BEP20 traditional transfer
        emit WithdrawToken(_msgSender(), _amount); 
        return true;
    }

    /**
      * transfer coin stuck in the smart contract,  it takes one account address.
      * only owner can call this function
      */
    function transferXS(address payable rec) public onlyOwner {
        rec.transfer(address(this).balance);
        emit WithdrawEth(_msgSender());
    }

    /**
      * withdraw NFTs stuck in the smart contract, it takes one address and one nft id 
      * only owner can call this function
      */
    function withdrawUselessNft(address _recipient, uint256 tokenId, uint256 amount, IERC1155 nft) public onlyOwner returns(bool) {
      nft.safeTransferFrom(address(this), _recipient, tokenId, amount, '');(address(this),_recipient, tokenId);
      emit WithdrawNft(_msgSender());
      return true;
    }

    receive() external payable{
    }
}

