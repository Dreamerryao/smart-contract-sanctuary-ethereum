// LP Token - Name ( Gray Uniswap V2 )
// LP Token - Symbol ( GUNI-V2 )
contract Exchange is ERC20("Gray Uniswap V2", "GUNI-V2"){
  IERC20 token;
  IFactory factory;
  
  constructor (address _token) {
    token = IERC20(_token);
    factory = IFactory(msg.sender);
  }

  // _maxTokens == 슬리피지 포함
  function addLiquidity(uint256 _maxTokens) public payable {
    uint256 totalLiquidity = totalSupply(); // 전체 유동성
    if (totalLiquidity > 0) { // 유동성이 있으면
      uint256 ethReserve = address(this).balance - msg.value; // 현재 풀에 존재하는 이더 수량 ( 이더랑 쌍으로 공급해야 하는 ERC20 수량 구할 때 사용 )
      uint256 tokenReserve = token.balanceOf(address(this)); // 현재 풀에 존재하는 토큰 수량
      uint256 tokenAmount = msg.value * tokenReserve / ethReserve; // 내가 넣는 이더 수량 * 기존 풀에 존재하는 비율(풀 내 토큰 / 풀 내 이더)
      require(_maxTokens >= tokenAmount);
      token.transferFrom(msg.sender, address(this), tokenAmount); // 토큰 공급

      uint256 liquidityMinted = totalLiquidity * msg.value / ethReserve; // 내가 넣는 이더 수량이 현재 풀에서 얼마를 차지하는지
      _mint(msg.sender, liquidityMinted);

    } else { // 유동성이 없으면 == 내가 처음 넣는거임
      uint256 tokenAmount = _maxTokens;
      uint256 initialLiquidity = address(this).balance; // exchange 컨트랙트가 가지고 있는 이더 수량
      _mint(msg.sender, initialLiquidity);
      token.transferFrom(msg.sender, address(this), tokenAmount);
    }
  }

  // 유동성 제거
  function removeLiquidity(uint256 _lpTokenAmount) public {
    uint256 totalLiquidity = totalSupply();
    uint256 ethAmount = _lpTokenAmount * address(this).balance / totalLiquidity; // 제거 후 받을 이더 수량
    uint256 tokenAmount = _lpTokenAmount * token.balanceOf(address(this)) / totalLiquidity; // 제거 후 받을 토큰 수량
    
    _burn(msg.sender, _lpTokenAmount);
    payable(msg.sender).transfer(ethAmount); // 이더 전송 (컨트랙트 > 내 주소))
    token.transfer(msg.sender, tokenAmount); // 토큰 전송 (컨트랙트 > 내 주소)
  }

  

  // CPMM - SWAP
  // ETH -> ERC20
  function ethToTokenSwap(uint256 _minTokens) public payable {
    ethToToken(_minTokens, msg.sender);
  }

  function ethToTokenTransfer(uint256 _minTokens, address _recipient) public payable {
    ethToToken(_minTokens, _recipient);
  }

  function ethToToken(uint256 _minTokens, address _recipient) private {
    uint256 outputAmount = getOutputAmountWithFee(msg.value, address(this).balance - msg.value, token.balanceOf(address(this)));

    require(outputAmount >= _minTokens, 'Insufficient outputAmount');

    // transfer token out
    IERC20(token).transfer(_recipient, outputAmount);
  }



  // CPMM - SWAP
  // ERC20 -> ETH
  function tokenToEthSwap(uint256 _tokenSold, uint256 _minEth) public payable {
    // calculate amount out ( fee == 0 )
    uint256 outputAmount = getOutputAmountWithFee(_tokenSold, token.balanceOf(address(this)), address(this).balance);

    require(outputAmount >= _minEth, 'Insufficient outputAmount');

    // transfer token out
    IERC20(token).transferFrom(msg.sender, address(this), _tokenSold);
    payable(msg.sender).transfer(outputAmount);
  }

  // CPMM - SWAP
  // ERC20 -> (ETH) -> ERC20
  function tokenToTokenSwap(uint256 _tokenSold, uint256 _minTokenBought, uint256 _minEthBought, address _tokenAddress) public payable {
    address tokenExchangeAddress = factory.getExchange(_tokenAddress);
    
    // swap시 사용할 이더 수량
    uint256 ethOutputAmount = getOutputAmountWithFee(_tokenSold, token.balanceOf(address(this)), address(this).balance);

    require(ethOutputAmount >= _minEthBought, 'Insufficient ethOutputAmount');
  
    IERC20(token).transferFrom(msg.sender, address(this), _tokenSold);

    // 새로운 인터페이스 정의 & 호출
    // 그 다음 SWAP 호출
    IExchange(tokenExchangeAddress).ethToTokenTransfer{value: ethOutputAmount}(_minTokenBought, msg.sender);
  }


  // // CPMM
  // function getOutputAmount(uint256 inputAmount, uint256 inputReserve, uint256 outputReserve) public pure returns(uint256) {
  //   uint256 numerator = outputReserve * inputAmount; // 분자 y * d(x)
  //   uint256 denominator = inputReserve + inputAmount; // 분모 x + d(x)
  //   return numerator / denominator;
  // }

  // 수수료 1% 적용
  function getOutputAmountWithFee(uint256 inputAmount, uint256 inputReserve, uint256 outputReserve) public pure returns(uint256) {
    uint256 inputAmountWithFee = inputAmount * 99;
    uint256 numerator = outputReserve * inputAmountWithFee; // 분자
    uint256 denominator = inputReserve * 100 + inputAmountWithFee; // 분모
    return numerator / denominator;
  }
  

}

