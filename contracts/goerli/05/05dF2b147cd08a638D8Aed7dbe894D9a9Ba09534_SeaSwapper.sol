interface StakerInterface {
    function distributeAwards(uint256 _amount) external ;
}

struct ConsiderationItem {
    ItemType itemType;
    address token;
    uint256 identifierOrCriteria;
    uint256 startAmount;
    uint256 endAmount;
    address payable recipient;
}


contract SeaSwapper is Ownable {

  uint256 private constant MAX_INT = 0xffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff;
    SeaportInterface public seaport;
    address public staker;

    mapping(address=>bool) public tokenAllowed;

        
    constructor(address _seaport, address _staker){
        seaport = SeaportInterface(_seaport);
        staker = _staker;
    }

    function setStaker(address _seaport, address _staker) external onlyOwner {
        seaport = SeaportInterface(_seaport);
        staker = _staker;
    }
   
    function setTokenAllowed(address _tokenAddress, bool _allowed) external onlyOwner {
        tokenAllowed[_tokenAddress] = _allowed;
        if(_allowed){
            IERC20(_tokenAddress).approve(address(seaport), MAX_INT);
        }
    }

    function fulfillOrder(
        Order calldata order,
        bytes32 fulfillerConduitKey
    ) external payable returns (bool fulfilled){

        uint256 totalAmount = 0;

        address tokenAddress = order.parameters.consideration[0].token;
    for (
            uint256 i;
            i < order.parameters.consideration.length;
            i++
        ) {
            ConsiderationItem memory _considerationItem = order.parameters.consideration[i];
            
            //suppose startAmount==endAmount
            totalAmount = totalAmount + _considerationItem.startAmount;

            //if recipient is staker, distribute awards
            if(tokenAllowed[_considerationItem.token]&&_considerationItem.recipient == staker){
                StakerInterface(staker).distributeAwards(_considerationItem.startAmount);
            }
        }

    //transfer token to this contract
    IERC20(tokenAddress).transferFrom(msg.sender, address(this), totalAmount);

    fulfilled = seaport.fulfillAdvancedOrder(
            toAdvancedOrder(order),
             new CriteriaResolver[](0),
             fulfillerConduitKey, 
             msg.sender);


    }

    function toAdvancedOrder(
        Order memory order
    ) internal pure returns (AdvancedOrder memory) {
        return
            AdvancedOrder({
                parameters: order.parameters,
                numerator: 1,
                denominator: 1,
                signature: order.signature,
                extraData: ""
            });
    }


}