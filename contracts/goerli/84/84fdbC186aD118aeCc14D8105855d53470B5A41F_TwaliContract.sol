pragma solidity ^0.8.13;


import "@openzeppelin/contracts/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@gnosis.pm/safe-contracts/contracts/GnosisSafe.sol";
import "@gnosis.pm/safe-contracts/contracts/proxies/GnosisSafeProxyFactory.sol";


/// @title Twali Contract - v1
/// @author Twali.xyz - Nicholas Gonzalez, Ivy Astrix
contract TwaliContract is Initializable, ReentrancyGuard {

    address public twali_FeeToAddress;
    address public twali_DeployedSafeAddress;
    address public constant gnosisSafeSingleton = 0xd9Db270c1B5E3Bd161E8c8503c55cEABeE709552;
    GnosisSafeProxyFactory public constant gnosisSafeProxyFactory = GnosisSafeProxyFactory(0xa6B71E26C5e0845f74c812102Ca7114b6a896AB2);

    bytes32 public constant DOMAIN_SEPARATOR_TYPEHASH = 0x8b73c3c69bb8fe3d512ecc4cf759cc79239f7b179b0ffacaa9a75d522b39400f;
    // keccak256("EIP712Domain(string name,string version,uint256 chainId,address verifyingContract)");
 
    bytes32 public constant WORK_DETAILS_TYPEHASH = 0x1abb6f7b812ff9d099652b2a82b5a67308f943074875ceafeab98bb8481be604;
    //  keccak256("WorkDetails(address contract_owner,address contract_address, string contract_sowMetaDataUrl,uint contract_payment_amount,uint contract_start_date,uint contract_end_date,uint contract_created_on)");

    bytes32 public DOMAIN_SEPARATOR;
    //  keccak256(abi.encode(DOMAIN_SEPARATOR_TYPEHASH,keccak256("Twali Contract"),keccak256("1.0.0"),block.chainid,address(this)));

    struct WorkDetails {
        address contract_owner;
        // Saved reference of contract address to WorkDetails
        address contract_address;
        // Contract Scope Of Work URL Off-Chain
        string contract_sowMetaDataUrl;
        // Contract Payout Amount
        uint contract_payment_amount;
        // experts start date in contract
        uint contract_start_date;
        // End date for werk completion 
        uint contract_end_date;
        // contract creation date
        uint contract_created_on;
    }

    struct ContractExpert {
        // Expert address that is set/saved to contract to complete contract work.
        address contract_expert;
    }

    ContractExpert public contractexpert;

    // Internal Contract Storage
    uint public contract_takeRate;
   
    // Mapping of contract scope of work to Owner/Client address.
    mapping(address => WorkDetails) public workdetails;
    // Use of authorized signature signer address => nonce value => signature state (true = used / false = unused)
    mapping(address => mapping (bytes32 => bool)) internal _authorizedSignature;


    /// @notice The contract's four 'status' stages that transitions throughout the contract cycle.
    /// Draft: Contract is in draft stage awaiting for Expert application to be selected.
    /// Signing: Contract is in Signing stage awaiting the Expert to verify their acceptance with a validated signature.
    /// Active: Contract is active and the created Gnosis Safe is funded.
    /// Complete: Contract werk is completed and approved by the client, and the Expert has received payment.
    /// Killed: Contract is depreicated/terminated from either the 'draft' or 'active'.
    enum Status { 
        Draft, 
        Signing,
        Active, 
        Complete, 
        Killed
    }

    /// @notice We have three different transfer types:
    /// ExpertPayment: Payment to expert once the work is done
    /// Refund: Refunding the client
    /// Take: The 'take' of the transaction from the client
    enum Transfer {
        ExpertPayment,
        Refund,
        Take
    }

    /// @dev Status: Contract is set to default status of 'Draft' on contract creation.
    Status public contract_currentStatus;
  
    /*
    *  Events
    */ 
    event ExpertSetToContract(address indexed from, address indexed selectedExpert);
    event ContractActivated(address indexed contractExpert, string);
    event ContractSafeCreated(address indexed safeDeployer, address indexed createdSafe);
    event ContractOwnerRefunded(address indexed contractOwner, uint indexed amount);
    event ExpertPayOutSuccess(address indexed expert, uint indexed payment);
    event WorkIsApproved(address indexed expert, uint indexed payout, string); 
    event TakePayOutSuccess(address indexed twali, uint indexed amount); 


    error InvalidCurrentStatus();
    error InvalidSignature();


    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() {
        // Locks Implementation when deployed
        _disableInitializers();
    }

    /// @notice This initializer replaces the constructor to is the base input data for a new contract clone instances .
    /// @dev initialize(): Is also called within the clone contract in TwaliCloneFactory.sol.
    /// @param _twaliFeeToAddress the addres of exteranl accoun that will be paid the take rate.
    /// @param _contractOwner the address of the contract owner who is the acting client.
    /// @param _sowMetaDataUrl Scope of work of the contract as a URI string.
    /// @param _contract_payment_amount is the fixed amount that will be paid to contracts expert.
    /// @param _contract_take_rate is the set perecentage take rate amount from the payment total.
    /// @param _contract_start_date is the set start date of contract.
    /// @param _contract_end_date is the set end date of contract.
    /// @param _contract_created_on is passed in from clone factory as the new contract is created.
    function initialize(
        address _twaliFeeToAddress,
        address _contractOwner,
        string calldata _sowMetaDataUrl,
        uint _contract_payment_amount,
        uint _contract_take_rate,
        uint _contract_start_date,
        uint _contract_end_date,
        uint _contract_created_on
    ) external
        isValidAddress(_contractOwner)
        initializer
 {

        workdetails[_contractOwner] = WorkDetails(_contractOwner, 
                                                    address(this), 
                                                    _sowMetaDataUrl, 
                                                    _contract_payment_amount, 
                                                    _contract_start_date, 
                                                    _contract_end_date, 
                                                    _contract_created_on);

        twali_FeeToAddress = _twaliFeeToAddress;
        contract_takeRate = _contract_take_rate;


        DOMAIN_SEPARATOR = keccak256(abi.encode(
        DOMAIN_SEPARATOR_TYPEHASH,
        keccak256("Twali Contract"),
        keccak256("1.0.0"),
        block.chainid, 
        address(this)));
    }

    /*
    *  Modifiers
    */ 

    /// @notice Ensure that only the contract's 'owner'(client) calls the selected function.
    modifier onlyOwner(){
        require(
            msg.sender == workdetails[msg.sender].contract_owner, 
            "Contract Owner Only"
            );
        _;
    }

    /// @notice  Ensure that only the contract's 'Expert' calls the selected function.
    modifier isExpert() {
        require(msg.sender == contractexpert.contract_expert, "Contract Expert Only");
        _;
    }

    /// @notice Checks that an input address is valid and not address(0).
    /// @param _addr: is a EOA or contract account address.
    modifier isValidAddress(address _addr) {
        require(_addr != address(0), "Invalid address");
        _;
    }

    /// @notice Ensure functions are available in their respective life cycle status stages (e.g., The function 'approveWorkSubmittied' can only be called during the 'Active' stage).
    /// @param _contract_currentStatus is defined as a parameter to ensure to function is only called at certain contract stages.
    modifier isStatus(Status _contract_currentStatus) {
        if (contract_currentStatus != _contract_currentStatus)
            revert InvalidCurrentStatus();
        _;
    }


    /// @notice Will set a 'draft' contract to the 'killed' stage if the contract needs to be depreicated/terminated.
    function killDraftContract() 
        external 
        onlyOwner
        isStatus(Status.Draft)
    {
        contract_currentStatus = Status.Killed;
    }


    /// @notice The contract Owner/Client function to set/save an 'Expert' address to the contract instance.
    /// @param _contract_expert wallet address of selected 'Expert' to contract.
    function addSelectedExpert(address _contract_expert) 
        external 
        onlyOwner
        isValidAddress(_contract_expert)
        isStatus(Status.Draft) {
        // Check that the contract address variable is NOT set with an expert already & is defined as 0 (empty value).
        require(workdetails[msg.sender].contract_owner != _contract_expert, "Owner Can't Be Expert");
        require(contractexpert.contract_expert != _contract_expert && contractexpert.contract_expert == address(0), "Expert Already Selected");

        contractexpert.contract_expert = _contract_expert;
        contract_currentStatus = Status.Signing;

        emit ExpertSetToContract(msg.sender, _contract_expert);
    }


    /// @notice Availiable function for the 'Expert' to verify their signature to transition the contract to 'Active' (Client & Expert Commencing agreed werk).
    /// @param workObj is an encoded value following EIP712 Signing TypedDate format.
    /// @param expertSignature is the bytes value of off-chain signature to be verified by the _signerCheck() function.
    /// @param nonce is a bytes32 unqiue value avoid signature replay attacks.
    function activateContract(
        WorkDetails calldata workObj,
        bytes calldata expertSignature,
        bytes32 nonce
    )
        external
        isExpert
        isStatus(Status.Signing)
        returns (address) 

    { 
        require(_validateWorkObject(workObj) == true);
        require(!_authorizedSignature[msg.sender][nonce], "Invalid Signature");

        if (expertSignature.length == 65) {
            uint8 sigV;
            bytes32 sigR;
            bytes32 sigS;

            bytes memory localSignatureData = expertSignature;

            assembly {
                sigR := mload(add(localSignatureData, 0x20))
                sigS := mload(add(localSignatureData, 0x40))
                sigV := byte(0, mload(add(localSignatureData, 0x60)))
            }

           bytes32 digest = _hashWorkDetails(workObj);
           address validExpert = _signatureCheck(digest, sigV, sigR, sigS);

           _authorizedSignature[validExpert][nonce] = true;
           contract_currentStatus = Status.Active;

           emit ContractActivated(validExpert, "Contract is Active");

           return validExpert;

        } else {
            revert InvalidSignature();
        }
    }

    /// @notice Sets an active contract to 'killed' stage and refunds ETH in contract to the client, who is the set contract 'owner'.
    /// @dev killActiveContract(): terminates and refunds payment for any clone of this contract that is in the active stage. 
    /// @param _safe is the address that will be executing the refund payment. 
    /// @param _refundToAddress is the address payable the refund will being going back to.
    /// @param _refundAmount is the payable refund amount to be sent back to contract owner.
    function killActiveContract(GnosisSafe _safe, address payable _refundToAddress, uint256 _refundAmount) 
        external 
        onlyOwner
        isValidAddress(address(_safe))
        isValidAddress(_refundToAddress)
        nonReentrant 
        isStatus(Status.Active) 
    {
        require(_refundAmount == workdetails[msg.sender].contract_payment_amount, "Incorrect Amount");

        transferPayment(_safe, _refundToAddress, _refundAmount, Transfer.Refund);
        contract_currentStatus = Status.Killed;

        emit ContractOwnerRefunded(_refundToAddress, _refundAmount);
    }


    /// @notice The contract Owner/Client calls when an expert submits/completes werk for Client approval and payment.
    /// @param _safe declared Gnosis safe of this contract as the acting escrow.
    /// @param _toExpert address payable of the expert that will be paid for completed & approved contract work.
    /// @param _feeToAddress is the payable third party Gnosis Safe receiving the take rate payment for contract. 
    function approveWorkSubmitted(GnosisSafe _safe, address payable _toExpert, address payable _feeToAddress) 
        external 
        onlyOwner
        isStatus(Status.Active)
        nonReentrant
    {
        require(address(_safe) == twali_DeployedSafeAddress, "Incorrect Contract Safe Address");
        require(_feeToAddress == twali_FeeToAddress && _toExpert == contractexpert.contract_expert, "Incorrect Payout Addresses");
        require(block.timestamp <= workdetails[msg.sender].contract_end_date, "Contract has passed end date");

        WorkDetails storage workdetailsUpdate = workdetails[msg.sender];

        uint contract_amount = workdetailsUpdate.contract_payment_amount;
        // Want to avoid overflow during take_amount calculation
        uint take_amount = contract_amount/100 * contract_takeRate;
        workdetailsUpdate.contract_payment_amount = 0;
        
        uint expertPayOutSum = contract_amount - take_amount;
        
        if((expertPayOutSum + take_amount) == contract_amount) {
             transferPayment(_safe, _toExpert, expertPayOutSum, Transfer.ExpertPayment);
             transferPayment(_safe, _feeToAddress, take_amount, Transfer.Take);

            contract_currentStatus = Status.Complete;
            emit WorkIsApproved(_toExpert, expertPayOutSum, "Work Approval & Payment Success");

        } else {
            revert("Incorrect take amount");
        }
    }

        /// @notice Use of the Gnosis Safe contracts library to deploy a new Gnosis Safe singleton instance.
        /// @dev Only deploys a new Safe instance that is only intialized with the contract owner and threshold.
        /// @param _newSafeOwner is the address of the to be Safe Owner.
        /// @param _saltNonce any value to pass in to determine a new Gnosis Safe address value upon deployment / cloning.
        function deploySafe(
        address _newSafeOwner,
        uint256 _saltNonce)
        external
        onlyOwner
        isValidAddress(_newSafeOwner) 
        returns (address) {

        // Check that a safe wasn't already created for contract
        require(twali_DeployedSafeAddress == address(0), "Safe Already Created For Contract");

        GnosisSafe _safe = GnosisSafe(
            payable(
            gnosisSafeProxyFactory.createProxy(
                gnosisSafeSingleton, // set singleton as immutable variable
                abi.encodePacked(_newSafeOwner, _saltNonce)
                )
            )
        );

        address[] memory safeOwner = new address[](1);
        safeOwner[0] = address(_newSafeOwner);

        // Gnosis Safe setup function defined here: https://github.com/safe-global/safe-contracts/blob/c36bcab46578a442862d043e12a83fec41143dec/contracts/GnosisSafe.sol#L75
        _safe.setup(
             safeOwner,     // Safe owners address[]
              1,           // threshold (uint256)
              address(0),   // to (address)
              bytes('0x'),  // data (bytes)
              0xf48f2B2d2a534e402487b3ee7C18c33Aec0Fe5e4,  // fallbackHandler (address) - this contract
              address(0),   // paymentToken (address (0 if ETH))
              0,            // payment (uint256)
              payable(address(0)) // paymentReceiver (address) or (0 if tx.origin)
        );

        emit ContractSafeCreated(msg.sender, address(_safe));
        twali_DeployedSafeAddress = address(_safe);

        return twali_DeployedSafeAddress;
    } 

    /// @notice Gnosis Safe contract library functional call to execute a call from declared & approved Safe contract module.
    /// @dev Depending on what we are passed via enum, execute one of the three possible transfers
    function transferPayment(GnosisSafe safe, address payable to, uint256 amount, Transfer transferType) internal {

        if(transferType == Transfer.ExpertPayment) {
            require(safe.execTransactionFromModule(to, amount, "", Enum.Operation.Call), "Could not execute ether transfer to Expert");

            emit ExpertPayOutSuccess(to, amount);
        }

        else if(transferType == Transfer.Refund) {
            require(safe.execTransactionFromModule(to, amount, "", Enum.Operation.Call), "Could not execute ether refund to Client");

            emit ContractOwnerRefunded(to, amount);
    }
        else if(transferType ==  Transfer.Take) {
            require(safe.execTransactionFromModule(to, amount, "", Enum.Operation.Call),
                "Could not execute take payment");

            emit TakePayOutSuccess(to,amount);
        }

    }

/// @notice Internal function that is called with 'activateContract' to validate the WorkDetails parameter is equal to the contract stored WorkDetails.
    function _validateWorkObject(WorkDetails memory _workobj) internal view returns (bool) {
   
        return(keccak256(abi.encode(_workobj)) == keccak256(abi.encode(workdetails[_workobj.contract_owner])));

    }


    /// @notice Hash function called within 'acitvateContract' to recreate off-chain signature and validate the structured data that is signed by the contract 'Expert'.
    /// @param workObj is the encoded value of the EIP712 Signing TypedDate format.
    function _hashWorkDetails(WorkDetails memory workObj) internal view returns (bytes32) {
        return keccak256(abi.encodePacked(
            "\x19\x01", // initial 0x19 byte & verison byte (EIP712 structured data -> https://eips.ethereum.org/EIPS/eip-191)
            DOMAIN_SEPARATOR,
            keccak256(abi.encode(
            WORK_DETAILS_TYPEHASH,
            workObj.contract_owner,
            address(this),
            keccak256(bytes(workObj.contract_sowMetaDataUrl)),
            workObj.contract_payment_amount,
            workObj.contract_start_date,
            workObj.contract_end_date,
            workObj.contract_created_on
            ))
        ));
    }

    /// @notice Signature check function called with 'activateContract' to validate the off-chain signature is the contract 'Expert'.
    function _signatureCheck(bytes32 _digest, uint8 sigV, bytes32 sigR, bytes32 sigS) internal view returns (address) {
       address signer = ecrecover(_digest, sigV, sigR, sigS);
       require(signer != address(0) && signer == contractexpert.contract_expert, "ECDSA: invalid signature");

       return signer;
    }

}

