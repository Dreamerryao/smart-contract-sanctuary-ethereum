// but that'll take a while, and we'd want an audit I'd wager --> v2 material :)
contract PokerLegensV1 is Ownable, ReentrancyGuard {  
    using Strings for uint256;
    using Address for address;

    mapping(address => bool) public team;
    bool public lockedIn = false;
    uint256 public cost = 0;
    mapping(address => uint256) public winners;

    function addTeamMember(address _wallet) external onlyOwner {
        team[_wallet] = true;
    }

    modifier onlyTeam {
        require(team[_msgSender()], "not team");
        _;
    }

    function setLockedIn(bool _lockedIn) external onlyTeam {
        lockedIn = _lockedIn;
    }
    
    function setCost(uint256 _cost) external onlyTeam {
        cost = _cost;
    }

    event Paid(address sender, uint256 amount);
    receive() external payable {
        emit Paid(_msgSender(), msg.value);
    } // in case ppl send donations (altho idk why, but ppl are odd...)

    function buyIn() payable external nonReentrant {
        require(msg.value >= cost, "error, didn't pay enough.");
        require(_msgSender() == tx.origin, "error, tried to mint from contract.");
        require(!lockedIn, "error, buyIn is locked.");
        emit Paid(_msgSender(), msg.value);
    }

    // allows for multiple winners, dev percentage, refunds if ppl end up not being able to play
    // would be nice to confirm sum <= 1...but we'd need to be able to iterate over winners to do that...
    function setPayout(uint256 _percentage, address _winner) external onlyTeam {
        require(_percentage <= 1.0, "error, setPayout percentage must be <= 1.0; that is, decimal representation of a percentage...");
        winners[_winner] = _percentage;
    }

    function payWinner(address _winner) external payable onlyTeam nonReentrant {
        uint256 percentage = winners[_winner];
        require(percentage > 0, "error, setPayout for this wallet first.");
        uint256 withdrawAmount = address(this).balance * percentage;
        (bool status, ) = payable(_winner).call{value: withdrawAmount}("");
        require(status);
    }

    // for v2 I should look into using/reimplementing OpenZeppelin's enumerable datatypes
    function payWinners(address[] calldata _winners) external payable onlyTeam nonReentrant {
        uint256 balance0 = address(this).balance;
        for (uint256 ii = 0; ii < _winners.length; ii++) {
            address _winner = _winners[ii];

            uint256 percentage = winners[_winner];
            require(percentage > 0, "error, setPayout for this wallet first.");
            uint256 withdrawAmount = balance0 * percentage;
            (bool status, ) = payable(_winner).call{value: withdrawAmount}("");
            require(status);
        }
    }
