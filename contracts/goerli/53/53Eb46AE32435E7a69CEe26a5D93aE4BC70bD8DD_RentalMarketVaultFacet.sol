error Not_Owner();

contract RentalMarketVaultFacet is ERC1155Holder, ERC721Holder {
    AppStorage s;

    constructor() {
        RentalStorageLib.setOwner(msg.sender);
    }

    modifier noReentrant() {
        require(!s.locked, "Reentrancy Protection");
        s.locked = true;
        _;
        s.locked = false;
    }

    modifier onlyOwner() {
        address owner = RentalStorageLib.getOwner();
        if (owner != msg.sender) revert Not_Owner();
        _;
    }

    function getRentalDetails(
        address _collection,
        uint256 _tokenId
    )
        external
        view
        returns (
            address _user,
            uint256 _collateral,
            uint256 _expires,
            uint256 _priceperday,
            bool _vaild,
            bool _renting
        )
    {
        return RentalStorageLib.getRentalDetails(_collection, _tokenId);
    }

    function getRenterDetails(
        address _collection,
        uint256 _tokenId
    ) external view returns (address _renter, uint256 _rentingexpires) {
        return RentalStorageLib.getRenterDetails(_collection, _tokenId);
    }

    function withdrawFunds(uint256 amount) external onlyOwner {
        require(address(this).balance >= amount);
        payable(msg.sender).transfer(amount);
    }
}

