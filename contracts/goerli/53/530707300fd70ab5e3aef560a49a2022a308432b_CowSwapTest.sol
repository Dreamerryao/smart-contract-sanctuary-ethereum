pragma solidity =0.8.17;







contract CowSwapTest is IERC1271, ICowSwapOnchainOrders, Ownable {
    using SafeERC20 for IERC20;
    using GPv2Order for *;

    ICowSwapSettlement public constant settlement = ICowSwapSettlement(0x9008D19f58AAbD9eD0D60971565AA8510560ab41);
    mapping(bytes32 => uint32) public orders;
    bytes32 public latestOrder;
    bytes32 public latestOrderHash;
    bytes public latestOrderUid;

    function placeOrder(
        IERC20 sellToken,
        IERC20 buyToken,
        uint256 sellAmount,
        uint256 buyAmount,
        uint256 feeAmount
    ) external returns (bytes memory orderUid) {
        // Transfer tokens and approve settlement contract
        uint256 amount = sellAmount + feeAmount;
        
        sellToken.transferFrom(
            msg.sender,
            address(this),
            amount
        );
        sellToken.approve(settlement.vaultRelayer(), amount);

        // Create order data and store it
        GPv2Order.Data memory order = GPv2Order.Data({
            sellToken: sellToken,
            buyToken: buyToken,
            receiver: address(this),
            sellAmount: sellAmount,
            buyAmount: buyAmount,
            validTo: uint32(block.timestamp) + 30 minutes,
            appData: bytes32(0),
            feeAmount: feeAmount,
            kind: GPv2Order.KIND_SELL,
            partiallyFillable: false,
            sellTokenBalance: GPv2Order.BALANCE_ERC20,
            buyTokenBalance: GPv2Order.BALANCE_ERC20
        });
        latestOrder = keccak256(abi.encode(order));
        orders[latestOrder] = order.validTo;

        // Generate CowSwap order
        bytes32 domainSeparator = settlement.domainSeparator();
        OnchainSignature memory signature = OnchainSignature({
            scheme: OnchainSigningScheme.Eip1271,
            data: abi.encode(0, order)
        });
            
        emit OrderPlacement(address(this), order, signature, "");

        latestOrderHash = order.hash(domainSeparator);
        orderUid = new bytes(GPv2Order.UID_LENGTH);
        orderUid.packOrderUidParams(latestOrderHash, address(this), order.validTo);
        latestOrderUid = orderUid;
    }

    function isValidSignature(bytes32 hash, bytes memory signature) external view override returns (bytes4 magicValue) {
        assert(orders[hash] < block.timestamp);
        
        magicValue = ERC1271_MAGIC_VALUE;
    }
}