pragma solidity ^0.8.9;

import "@openzeppelin/contracts-upgradeable/utils/cryptography/ECDSAUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/cryptography/draft-EIP712Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol";

import "@dlsl/dev-modules/pool-contracts-registry/pool-factory/PublicBeaconProxy.sol";
import "@dlsl/dev-modules/pool-contracts-registry/ProxyBeacon.sol";
import "@dlsl/dev-modules/libs/decimals/DecimalsConverter.sol";
import "@dlsl/dev-modules/libs/arrays/Paginator.sol";

import "./interfaces/IPoolFactory.sol";
import "./interfaces/IInvestmentPool.sol";

contract PoolFactory is IPoolFactory, OwnableUpgradeable, EIP712Upgradeable, UUPSUpgradeable {
    using EnumerableSet for EnumerableSet.AddressSet;
    using Paginator for EnumerableSet.AddressSet;
    using DecimalsConverter for uint256;

    bytes32 internal constant _CREATE_TYPEHASH =
        keccak256(
            "Create(address guildMaster,uint256 maxTokensHardCap,uint256 investmentCategoryId,uint256 rewardsCategoryId)"
        );

    uint256 public override categoriesCount;
    string public override poolsBaseURI;

    ProxyBeacon public override poolsBeacon;

    EnumerableSet.AddressSet internal _investmentPools;
    EnumerableSet.AddressSet internal _admins;

    mapping(address => bool) public override onlyExistingGuildMasters;
    mapping(uint256 => CategoryInfo) internal _categoriesInfo;

    modifier onlyAdmin() {
        require(isAdmin(msg.sender), "PoolFactory: Only admin can call this function.");
        _;
    }

    function __PoolFactory_init(
        address[] memory admins_,
        string[] memory categoryNames_,
        address[][] memory categoryTokens_,
        string memory poolsBaseURI_
    ) external override initializer {
        __Ownable_init();
        __EIP712_init("PoolFactory", "1");

        require(
            categoryNames_.length == categoryTokens_.length,
            "PoolFactory: Arrays lengths missmatch."
        );

        _updateAddressSet(_admins, admins_, true);

        for (uint256 i = 0; i < categoryNames_.length; i++) {
            _updateCategory(
                type(uint256).max,
                categoryNames_[i],
                categoryTokens_[i],
                new address[](0)
            );
        }

        poolsBaseURI = poolsBaseURI_;
        poolsBeacon = new ProxyBeacon();
    }

    function setNewImplementation(address newImplementation_) external override onlyOwner {
        if (poolsBeacon.implementation() != newImplementation_) {
            poolsBeacon.upgrade(newImplementation_);
        }
    }

    function deployInvestmentPool(
        PoolDeployParameters memory deployParams_,
        bytes32 r_,
        bytes32 s_,
        uint8 v_
    ) external override {
        require(
            !onlyExistingGuildMasters[deployParams_.guildMaster],
            "PoolFactory: Guild master already exists."
        );
        require(deployParams_.guildMaster == msg.sender, "PoolFactory: Incorrect guild master.");
        require(
            doesCategoryExist(deployParams_.investmentCategoryId) &&
                doesCategoryExist(deployParams_.rewardsCategoryId),
            "PoolFactory: Incorrect investment or reward category id."
        );

        bytes32 structHash_ = keccak256(
            abi.encode(
                _CREATE_TYPEHASH,
                deployParams_.guildMaster,
                deployParams_.maxTokensHardCap,
                deployParams_.investmentCategoryId,
                deployParams_.rewardsCategoryId
            )
        );

        address signer_ = ECDSAUpgradeable.recover(_hashTypedDataV4(structHash_), v_, r_, s_);
        require(isAdmin(signer_), "PoolFactory: Invalid signature.");

        require(
            _categoriesInfo[deployParams_.investmentCategoryId].categoryTokens.contains(
                deployParams_.investmentToken
            ),
            "PoolFactory: Invalid investment token."
        );
        require(
            _categoriesInfo[deployParams_.rewardsCategoryId].categoryTokens.contains(
                deployParams_.rewardsToken
            ),
            "PoolFactory: Invalid rewards token."
        );

        address newPool_ = address(new PublicBeaconProxy(address(poolsBeacon), ""));

        IInvestmentPool(newPool_).__InvestmentPool_init(
            deployParams_.guildMaster,
            deployParams_.investmentToken,
            deployParams_.rewardsToken,
            deployParams_.maxTokensHardCap,
            deployParams_.currentTokensHardCap
        );

        onlyExistingGuildMasters[deployParams_.guildMaster] = true;
        _investmentPools.add(newPool_);

        emit InvestmentPoolDeployed(
            newPool_,
            deployParams_.guildMaster,
            deployParams_.investmentToken,
            deployParams_.rewardsToken
        );
    }

    function updateAdmins(address[] calldata adminsToUpdate_, bool isAdding_)
        external
        override
        onlyOwner
    {
        _updateAddressSet(_admins, adminsToUpdate_, isAdding_);
    }

    function updateCategory(
        uint256 categoryId_,
        string calldata categoryName_,
        address[] calldata tokensToAdd_,
        address[] calldata tokensToRemove_
    ) external onlyAdmin {
        bool isNewCategory_ = categoryId_ == type(uint256).max;

        require(
            isNewCategory_ || doesCategoryExist(categoryId_),
            "PoolFactory: Invalid category identifier."
        );

        if (isNewCategory_) {
            require(bytes(categoryName_).length > 0, "PoolFactory: Invalid new category name.");
        }

        _updateCategory(categoryId_, categoryName_, tokensToAdd_, tokensToRemove_);
    }

    function setPoolsBaseURI(string calldata newPoolsBaseURI_) external override onlyAdmin {
        poolsBaseURI = newPoolsBaseURI_;
    }

    function investmentPools(uint256 poolId_) external view override returns (address) {
        return _investmentPools.at(poolId_);
    }

    function getInvestmentPoolsImpl() external view override returns (address) {
        return poolsBeacon.implementation();
    }

    function getAdmins() external view override returns (address[] memory) {
        return _admins.values();
    }

    function getInvestmentPoolsCount() external view override returns (uint256) {
        return _investmentPools.length();
    }

    function getCategoryInfo(uint256 categoryId_)
        external
        view
        override
        returns (string memory, address[] memory)
    {
        CategoryInfo storage _categoryInfo = _categoriesInfo[categoryId_];

        return (_categoryInfo.categoryName, _categoryInfo.categoryTokens.values());
    }

    function getBasePoolsInfo(address[] memory poolArr_)
        external
        view
        override
        returns (BasePoolInfo[] memory poolInfoArr_)
    {
        poolInfoArr_ = new BasePoolInfo[](poolArr_.length);

        for (uint256 i = 0; i < poolArr_.length; i++) {
            poolInfoArr_[i] = _getBasePoolInfo(poolArr_[i]);
        }
    }

    function getInvestmentPoolsInfo(address[] memory poolArr_)
        external
        view
        override
        returns (InvestmentPoolInfo[] memory poolInfoArr_)
    {
        poolInfoArr_ = new InvestmentPoolInfo[](poolArr_.length);

        for (uint256 i = 0; i < poolArr_.length; i++) {
            poolInfoArr_[i] = _getInvestmentPoolInfo(poolArr_[i]);
        }
    }

    function getDetailedInvestmentPoolsInfo(address[] memory poolArr_)
        external
        view
        override
        returns (DetailedInvestmentPoolInfo[] memory poolInfoArr_)
    {
        poolInfoArr_ = new DetailedInvestmentPoolInfo[](poolArr_.length);

        for (uint256 i = 0; i < poolArr_.length; i++) {
            IInvestmentPool investmentPool_ = IInvestmentPool(poolArr_[i]);
            IERC20Metadata investmentToken_ = IERC20Metadata(investmentPool_.investmentToken());

            poolInfoArr_[i] = DetailedInvestmentPoolInfo(
                _getInvestmentPoolInfo(poolArr_[i]),
                _getTokenInfo(investmentPool_.rewardsToken()),
                investmentPool_.maxTokensHardCap(),
                investmentToken_.balanceOf(poolArr_[i]).to18(investmentToken_.decimals())
            );
        }
    }

    function getUserPoolsInfo(address userAddr_, address[] memory poolArr_)
        external
        view
        override
        returns (UserPoolInfo[] memory userPoolInfoArr_)
    {
        userPoolInfoArr_ = new UserPoolInfo[](poolArr_.length);

        for (uint256 i = 0; i < poolArr_.length; i++) {
            IInvestmentPool investmentPool_ = IInvestmentPool(poolArr_[i]);

            (uint256 investedAmount_, , ) = investmentPool_.usersInvestInfo(userAddr_);

            userPoolInfoArr_[i] = UserPoolInfo(
                _getBasePoolInfo(poolArr_[i]),
                _getTokenInfo(investmentPool_.investmentToken()),
                _getTokenInfo(investmentPool_.rewardsToken()),
                investedAmount_,
                investmentPool_.getUserRewards(userAddr_)
            );
        }
    }

    function getAllUserPools(
        address userAddr_,
        uint256 offset_,
        uint256 limit_
    ) external view override returns (address[] memory) {
        address[] memory pools_ = _investmentPools.part(offset_, limit_);

        for (uint256 i = 0; i < pools_.length; i++) {
            if (!IInvestmentPool(pools_[i]).onlyExistingInvestor(userAddr_)) {
                pools_[i] = address(0);
            }
        }

        return pools_;
    }

    function isAdmin(address userAddr_) public view override returns (bool) {
        return _admins.contains(userAddr_);
    }

    function doesCategoryExist(uint256 categoryId_) public view override returns (bool) {
        return categoryId_ < categoriesCount;
    }

    function _updateCategory(
        uint256 categoryId_,
        string memory categoryName_,
        address[] memory categoryTokensToAdd_,
        address[] memory categoryTokensToRemove_
    ) internal {
        uint256 currentCategoryId_ = categoryId_ == type(uint256).max
            ? categoriesCount++
            : categoryId_;

        CategoryInfo storage _categoryInfo = _categoriesInfo[currentCategoryId_];

        if (
            keccak256(abi.encodePacked(categoryName_)) !=
            keccak256(abi.encodePacked(_categoryInfo.categoryName))
        ) {
            _categoryInfo.categoryName = categoryName_;
        }

        _updateAddressSet(_categoryInfo.categoryTokens, categoryTokensToAdd_, true);
        _updateAddressSet(_categoryInfo.categoryTokens, categoryTokensToRemove_, false);

        emit CategoryUpdated(
            currentCategoryId_,
            categoryName_,
            categoryTokensToAdd_,
            categoryTokensToRemove_
        );
    }

    function _updateAddressSet(
        EnumerableSet.AddressSet storage addressSet,
        address[] memory addressesToUpdate_,
        bool isAdding_
    ) internal {
        for (uint256 i; i < addressesToUpdate_.length; i++) {
            if (isAdding_) {
                require(addressesToUpdate_[i] != address(0), "PoolFactory: Bad address.");

                addressSet.add(addressesToUpdate_[i]);
            } else {
                addressSet.remove(addressesToUpdate_[i]);
            }
        }
    }

    function _authorizeUpgrade(address newImplementation) internal override onlyOwner {}

    function _getTokenInfo(IERC20Metadata token_) internal view returns (TokenInfo memory) {
        return TokenInfo(address(token_), IERC20Metadata(token_).symbol());
    }

    function _getBasePoolInfo(address poolAddr_) internal view returns (BasePoolInfo memory) {
        return BasePoolInfo(poolAddr_, IInvestmentPool(poolAddr_).isActive());
    }

    function _getInvestmentPoolInfo(address poolAddr_)
        internal
        view
        returns (InvestmentPoolInfo memory)
    {
        IInvestmentPool investmentPool_ = IInvestmentPool(poolAddr_);

        return
            InvestmentPoolInfo(
                _getBasePoolInfo(poolAddr_),
                _getTokenInfo(investmentPool_.investmentToken()),
                investmentPool_.tokensHardCap(),
                investmentPool_.getTotalInvestorsCount(),
                investmentPool_.totalInvestedAmount()
            );
    }
}

