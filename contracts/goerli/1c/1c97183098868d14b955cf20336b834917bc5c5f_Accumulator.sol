library MemUtils {
    /**
     * @dev Allocates a memory byte array of `_len` bytes without zeroing it out.
     */
    function unsafeAllocateBytes(uint256 _len) internal pure returns (bytes memory result) {
        assembly {
            result := mload(0x40)
            mstore(result, _len)
            mstore(0x40, add(add(result, _len), 32))
        }
    }

    /**
     * Performs a memory copy of `_len` bytes from position `_src` to position `_dst`.
     */
    function memcpy(uint256 _src, uint256 _dst, uint256 _len) internal pure {
        assembly {
            // while al least 32 bytes left, copy in 32-byte chunks
            for { } gt(_len, 31) { } {
                mstore(_dst, mload(_src))
                _src := add(_src, 32)
                _dst := add(_dst, 32)
                _len := sub(_len, 32)
            }
            if gt(_len, 0) {
                // read the next 32-byte chunk from _dst, replace the first N bytes
                // with those left in the _src, and write the transformed chunk back
                let mask := sub(shl(1, mul(8, sub(32, _len))), 1) // 2 ** (8 * (32 - _len)) - 1
                let srcMasked := and(mload(_src), not(mask))
                let dstMasked := and(mload(_dst), mask)
                mstore(_dst, or(dstMasked, srcMasked))
            }
        }
    }

    /**
     * Copies bytes from `_src` to `_dst`, starting at position `_dstStart` into `_dst`.
     */
    function copyBytes(bytes memory _src, bytes memory _dst, uint256 _dstStart) internal pure {
        require(_dstStart + _src.length <= _dst.length, "BYTES_ARRAY_OUT_OF_BOUNDS");
        uint256 srcStartPos;
        uint256 dstStartPos;
        assembly {
            srcStartPos := add(_src, 32)
            dstStartPos := add(add(_dst, 32), _dstStart)
        }
        memcpy(srcStartPos, dstStartPos, _src.length);
    }
}

contract NodeRegistry {
    address public governance;
    struct Validator {
        bytes pubKey;
        bytes signature;
    }
    uint256 public constant PUBKEY_LENGTH = 48;
    uint256 public constant SIGNATURE_LENGTH = 96;
    Validator[] public validators;

    uint256 public activeValidators;
    //// Locker address
    address public locker;
    ///Events
    event ValidatorRegistered(bytes pubKey);
    event ValidatorRemoved(bytes pubKey);
    error NOT_LOCKER();
    error NOT_GOVERNANCE();
    error INVALID_LENGTH();
    error WRONG_QUANTITY();
    error NOT_ENOUGH_VALIDATORS();
    error INDEX_OUT_OF_BOUNDS();
    modifier onlyLocker() {
        if (msg.sender != locker) revert NOT_LOCKER();
        _;
    }

    /// @notice Constructor
    constructor(address _locker) {
        locker = _locker;
        governance = msg.sender;
    }

    /**
     * @notice Registers validators
     * @param _pubkeys validator's public keys
     * @param _signatures validator's signatures
     */
    function registerValidators(
        uint256 _quantity,
        bytes memory _pubkeys,
        bytes memory _signatures
    ) external {
        if (msg.sender != governance) revert NOT_GOVERNANCE();
        if (_quantity == 0) revert WRONG_QUANTITY();
        if (_pubkeys.length != _quantity * PUBKEY_LENGTH) revert INVALID_LENGTH();
        if (_signatures.length != _quantity * SIGNATURE_LENGTH) revert INVALID_LENGTH();

        for (uint256 i = 0; i < _quantity; ) {
            _registerValidator(
                BytesLib.slice(_pubkeys, i * PUBKEY_LENGTH, PUBKEY_LENGTH),
                BytesLib.slice(_signatures, i * SIGNATURE_LENGTH, SIGNATURE_LENGTH)
            );
            unchecked {
                i++;
            }
        }
    }

    function _registerValidator(bytes memory pubKey, bytes memory signature) internal {
        validators.push(Validator(pubKey, signature));
        emit ValidatorRegistered(pubKey);
    }

    /**
     * @notice Returns number of usable signing keys of the node operator #`_operator_id`
     */
    function getUnusedSigningKeyCount() external view returns (uint256) {
        return validators.length;
    }

    function assignNextSigningKeys(uint256 _numKeys)
        external
        onlyLocker
        returns (bytes memory pubkeys, bytes memory signatures)
    {
        if (_numKeys > validators.length) revert NOT_ENOUGH_VALIDATORS();

        pubkeys = MemUtils.unsafeAllocateBytes(_numKeys * PUBKEY_LENGTH);
        signatures = MemUtils.unsafeAllocateBytes(_numKeys * SIGNATURE_LENGTH);
        Validator memory validator;
        uint256 validatorsLength = validators.length;
        if (_numKeys == 1) {
            validator = validators[validatorsLength - 1];
            validators.pop();
            return (validator.pubKey, validator.signature);
        } else {
            for (uint256 i = 0; i < _numKeys; i++) {
                validatorsLength = validators.length;
                validator = validators[validatorsLength - 1];
                validators.pop();
                MemUtils.copyBytes(validator.pubKey, pubkeys, i * PUBKEY_LENGTH);
                MemUtils.copyBytes(validator.signature, signatures, i * SIGNATURE_LENGTH);
            }
        }
        activeValidators += _numKeys;
    }

    function removeValidator(uint256 index) external {
        if (msg.sender != governance) revert NOT_GOVERNANCE();
        if (index >= validators.length) revert INDEX_OUT_OF_BOUNDS();
        bytes memory pubkey = validators[index].pubKey;
        validators[index] = validators[validators.length - 1];
        validators.pop();

        emit ValidatorRemoved(pubkey);
    }

    function getOperatorRewards() external view returns (address[] memory recipients, uint256[] memory rewards) {}

    /**
     * @notice Set new governance
     * @param _governance new governance address
     */
    function setGovernance(address _governance) external {
        if (msg.sender != governance) revert NOT_GOVERNANCE();
        governance = _governance;
    }
}

contract Accumulator {
    address public immutable WETH;
    address public gauge;
    address public governance;
    address public futureGovernance;
    address public insurance;
    address public treasury;
    address public nodeRegistry;
    uint256 public treasuryFee = 500;
    uint256 public insuranceFee = 500;
    uint256 public operatorFee = 0;
    uint256 public constant FEE_DENOMINATOR = 10000;

    event GovernanceChanged(address indexed newGovernance);
    event FeesChanged(FeeType feeType, uint256 newFee);
    event InsuranceChanged(address indexed newInsurance);
    event TreasuryChanged(address indexed newTreasury);
    event RewardNotified(address gauge, address tokenReward, uint256 amountNotified);
    event OperatorRewardDistributed(address indexed operator, uint256 amount);
    enum FeeType {
        Treasury,
        Insurance,
        Operator
    }
    enum AddressType {
        Insurance,
        Treasury,
        NodeRegistry
    }
    error NOT_GOVERNANCE();
    error ZERO_ADDRESS();
    error NOT_FUTURE_GOVERNANCE();
    error INVALID_FEE();
    error INVALID_ADDRESS_TYPE();
    error EXCEED_FEE();

    constructor(address _gauge, address _weth) {
        governance = msg.sender;
        gauge = _gauge;
        WETH = _weth;
    }

    function notifyRewards() external {
        uint256 balance = address(this).balance;
        uint256 treasuryPart = (balance * treasuryFee) / FEE_DENOMINATOR;
        uint256 insurancePart = (balance * insuranceFee) / FEE_DENOMINATOR;
        uint256 operatorPart = (balance * operatorFee) / FEE_DENOMINATOR;
        uint256 gaugePart = balance - treasuryPart - insurancePart - operatorPart;
        IWETH(WETH).deposit{ value: gaugePart }();
        IWETH(WETH).approve(gauge, gaugePart);
        MultiRewards(gauge).notifyRewardAmount(WETH, gaugePart);
        emit RewardNotified(gauge, WETH, gaugePart);
        payable(treasury).transfer(treasuryPart);
        payable(insurance).transfer(insurancePart);
        (address[] memory operators, uint256[] memory operatorShares) = NodeRegistry(nodeRegistry).getOperatorRewards();
        for (uint256 i = 0; i < operators.length; i++) {
            uint256 operatorReward = (operatorPart * operatorShares[i]) / FEE_DENOMINATOR;
            payable(operators[i]).transfer(operatorReward);
            emit OperatorRewardDistributed(operators[i], operatorReward);
        }
    }

    receive() external payable {
        // do nothing
    }

    function _onlyGovernance() internal view {
        if (msg.sender != governance) revert NOT_GOVERNANCE();
    }

    //////////////////////////
    //// Setters
    //////////////////////////
    function commitNewGovernance(address _governance) external {
        _onlyGovernance();
        if (governance == address(0)) revert ZERO_ADDRESS();
        futureGovernance = _governance;
    }

    function acceptGovernance() external {
        if (msg.sender != futureGovernance) revert NOT_FUTURE_GOVERNANCE();
        governance = futureGovernance;
        emit GovernanceChanged(msg.sender);
    }

    function setAddresses(AddressType _addressType, address _newAddress) external {
        _onlyGovernance();
        if (_newAddress == address(0)) revert ZERO_ADDRESS();
        if (_addressType == AddressType.Treasury) {
            treasury = _newAddress;
            emit TreasuryChanged(_newAddress);
        } else if (_addressType == AddressType.Insurance) {
            insurance = _newAddress;
            emit InsuranceChanged(_newAddress);
        } else if (_addressType == AddressType.NodeRegistry) {
            nodeRegistry = _newAddress;
        } else {
            revert INVALID_ADDRESS_TYPE();
        }
    }

    function setFees(FeeType _feeType, uint256 _newFee) external {
        _onlyGovernance();
        if (_feeType == FeeType.Treasury) {
            treasuryFee = _newFee;
        } else if (_feeType == FeeType.Insurance) {
            insuranceFee = _newFee;
        } else if (_feeType == FeeType.Operator) {
            operatorFee = _newFee;
        } else {
            revert INVALID_FEE();
        }
        if (treasuryFee + insuranceFee + operatorFee > FEE_DENOMINATOR) revert EXCEED_FEE();
        emit FeesChanged(_feeType, _newFee);
    }
}