pragma solidity ^0.8.4;




//import "hardhat/console.sol";

struct LeftAmount {
    uint256 left0;
    uint256 left1;
}

contract OneClickJoin {
    using SafeERC20 for IERC20;

    IUserDepositManagment public immutable farm;

    IRouter public immutable router;

    IERC20 public immutable token0;
    IERC20 public immutable token1;
    IERC20 public immutable pair;

    uint128 public immutable pid;

    constructor(
        IUserDepositManagment farm_,
        IRouter router_,
        IERC20 token0_,
        IERC20 token1_,
        IERC20 pair_,
        uint128 pid_
    ) {
        farm = farm_;
        router = router_;
        token0 = token0_;
        token1 = token1_;
        pair = pair_;

        pair_.approve(address(farm_), type(uint256).max);
        token0_.approve(address(router_), type(uint256).max);
        token1_.approve(address(router_), type(uint256).max);

        pid = pid_;
    }

    function joinWithToken0For(
        address _user,
        uint256 _amount,
        uint16 _lockWeeks,
        bool _harvest,
        address _ref
    ) external returns (uint256, uint256) {
        token0.safeTransferFrom(msg.sender, address(this), _amount);
        return _join0For(_user, _amount, _lockWeeks, _harvest, _ref);
    }

    function joinWithToken0(
        uint256 _amount,
        uint16 _lockWeeks,
        bool _harvest,
        address _ref
    ) external returns (uint256, uint256) {
        token0.safeTransferFrom(msg.sender, address(this), _amount);
        return _join0For(msg.sender, _amount, _lockWeeks, _harvest, _ref);
    }

    function _join0For(
        address _user,
        uint256 _amount,
        uint16 _lockWeeks,
        bool _harvest,
        address _ref
    ) internal returns (uint256 left0, uint256 left1) {
        address[] memory path = new address[](2);
        path[0] = address(token0);
        path[1] = address(token1);

        uint256[] memory amounts = router.swapExactTokensForTokens(
            _amount / 2,
            0,
            path,
            address(this),
            type(uint256).max
        );

        (uint256 amountA, uint256 amountB, uint256 liquidity) = router
            .addLiquidity(
                address(token0),
                address(token1),
                _amount - (_amount / 2),
                amounts[1],
                0,
                0,
                address(this),
                type(uint256).max
            );

        left0 = _amount - (_amount / 2) - amountA;
        left1 = amounts[1] - amountB;

        if (left0 > 0) {
            token0.safeTransfer(msg.sender, left0);
        }
        if (left1 > 0) {
            token1.safeTransfer(msg.sender, left1);
        }

        farm.depositFor(
            _user,
            pid,
            uint128(liquidity),
            _lockWeeks,
            _harvest,
            _ref
        );

        //return (left0, left1);
    }

    function joinWithToken1For(
        address _user,
        uint256 _amount,
        uint16 _lockWeeks,
        bool _harvest,
        address _ref
    ) external returns (uint256, uint256) {
        token1.safeTransferFrom(msg.sender, address(this), _amount);
        return _join1For(JoinData(_user, _amount, _lockWeeks, _harvest, _ref));
    }

    function joinWithToken1(
        uint256 _amount,
        uint16 _lockWeeks,
        bool _harvest,
        address _ref
    ) external returns (uint256, uint256) {
        token1.safeTransferFrom(msg.sender, address(this), _amount);

        return
            _join1For(
                JoinData(msg.sender, _amount, _lockWeeks, _harvest, _ref)
            );
    }

    struct JoinData {
        address _user;
        uint256 _amount;
        uint16 _lockWeeks;
        bool _harvest;
        address _ref;
    }

    function _join1For(JoinData memory data)
        internal
        returns (uint256, uint256)
    {
        address[] memory path = new address[](2);
        path[0] = address(token1);
        path[1] = address(token0);

        uint256[] memory amounts = router.swapExactTokensForTokens(
            data._amount / 2,
            0,
            path,
            address(this),
            type(uint256).max
        );

        uint256 am = data._amount - (data._amount / 2);

        (uint256 amountA, uint256 amountB, uint256 liquidity) = router
            .addLiquidity(
                address(token0),
                address(token1),
                amounts[1],
                am,
                0,
                0,
                address(this),
                type(uint256).max
            );

        LeftAmount memory left = LeftAmount({
            left0: amounts[1] - amountA,
            left1: am - amountB
        });

        if (left.left0 > 0) {
            token0.safeTransfer(msg.sender, left.left0);
        } else if (left.left1 > 0) {
            token1.safeTransfer(msg.sender, left.left1);
        }

        _depositToFarm(
            data._user,
            liquidity,
            data._lockWeeks,
            data._harvest,
            data._ref
        );

        return (left.left0, left.left1);
    }

    function _depositToFarm(
        address _user,
        uint256 _amount,
        uint16 _lockWeeks,
        bool _harvest,
        address _ref
    ) internal {
        farm.depositFor(
            _user,
            pid,
            uint128(_amount),
            _lockWeeks,
            _harvest,
            _ref
        );
    }
}