pragma solidity ^0.8.0;

import {ERC20} from "solmate/tokens/ERC20.sol";
import {ERC4626} from "solmate/mixins/ERC4626.sol";
import {ERC721} from "solmate/tokens/ERC721.sol";
import {SafeTransferLib} from "solmate/utils/SafeTransferLib.sol";
import "./BoringBatchable.sol";

interface Factory {
    function payer() external view returns (address);

    function bot() external view returns (address);

    function tokenToPayer(uint256 _id) external view returns (address);

    function mint(address _recipient) external returns (bool, uint256 id);

    function burn(uint256 _id) external returns (bool);
}

/// @title LlamaPay V2 Payer Contract
/// @author nemusona
contract LlamaPayV2Payer is BoringBatchable {
    using SafeTransferLib for ERC20;

    struct Stream {
        uint216 amountPerSec;
        uint40 lastUpdate;
        address vault;
    }

    struct Vault {
        uint256 balance;
        uint256 deposited;
        uint40 lastUpdate;
        uint216 totalPaidPerSec;
    }

    address public immutable factory;
    address public immutable owner;

    mapping(address => Vault) public vaults;
    mapping(uint256 => Stream) public streams;

    event Deposit(
        address indexed from,
        address indexed token,
        address indexed vault,
        uint256 amount
    );
    event PayerWithdraw(address indexed vault, uint256 amount);
    event Withdraw(uint256 id, uint256 amount, address indexed payee);
    event StreamCreated(
        uint256 id,
        address indexed vault,
        address indexed payee,
        uint216 amountPerSec
    );
    event StreamCancelled(uint256 id);
    event StreamPaused(uint256 id);
    event StreamResumed(uint256 id);

    constructor() {
        factory = msg.sender;
        owner = Factory(msg.sender).payer();
    }

    /// @notice deposit tokens into vault.
    /// @param _token token to deposit.
    /// @param _vault vault for token to be deposited into.
    /// @param _amount amount of tokens to deposit.
    function deposit(
        address _token,
        address _vault,
        uint256 _amount
    ) external {
        ERC20(_token).safeTransferFrom(msg.sender, address(this), _amount);
        ERC20(_token).safeApprove(_vault, _amount);
        ERC4626(_vault).deposit(_amount, address(this));
        uint8 decimals = ERC20(_token).decimals();
        uint256 toAdd;
        unchecked {
            toAdd = _amount * (10**(20 - decimals));
        }
        vaults[_vault].balance += toAdd;
        vaults[_vault].deposited += toAdd;

        emit Deposit(msg.sender, _token, _vault, _amount);
    }

    /// @notice update vault balances
    /// @param _vault vault to be updated
    function _updateVault(address _vault) private {
        uint256 totalPaidPerSec = vaults[_vault].totalPaidPerSec;
        uint256 delta = block.timestamp - vaults[_vault].lastUpdate;
        uint256 balance = vaults[_vault].balance;

        unchecked {
            uint256 streamedSinceUpdate = delta * totalPaidPerSec;
            if (balance >= streamedSinceUpdate) {
                vaults[_vault].balance -= streamedSinceUpdate;
                vaults[_vault].lastUpdate = uint40(block.timestamp);
            } else {
                vaults[_vault].balance = balance % totalPaidPerSec;
                vaults[_vault].lastUpdate += uint40(balance / totalPaidPerSec);
            }
        }
    }

    /// @notice withdraw unstreamed tokens from vault
    /// @param _vault vault to withdraw from
    /// @param _amount amount to withdraw (20 decimals)
    function withdrawPayer(address _vault, uint256 _amount) external {
        require(msg.sender == owner, "not owner");

        _updateVault(_vault);
        require(block.timestamp == vaults[_vault].lastUpdate, "payer in debt");

        uint8 decimals = ERC4626(_vault).asset().decimals();
        uint256 toWithdraw;

        unchecked {
            vaults[_vault].balance -= _amount;
            vaults[_vault].deposited -= _amount;
            toWithdraw = _amount / (10**(20 - decimals));
        }

        ERC4626(_vault).withdraw(toWithdraw, owner, address(this));

        emit PayerWithdraw(_vault, _amount);
    }

    /// @notice withdraw tokens from stream
    /// @param _id stream token id
    /// @param _amount amount to withdraw (20 decimals)
    function withdraw(uint256 _id, uint256 _amount) public {
        Stream storage stream = streams[_id];
        address payee = ERC721(factory).ownerOf(_id);
        require(payee != address(0), "stream doesn't exist");
        require(stream.lastUpdate > 0, "stream paused");

        Vault storage vault = vaults[stream.vault];

        _updateVault(stream.vault);
        uint256 delta = vault.lastUpdate - stream.lastUpdate;
        uint8 decimals = ERC4626(stream.vault).asset().decimals();

        uint256 toWithdraw;
        uint256 available;
        uint256 yieldEarned;

        unchecked {
            available = delta * stream.amountPerSec;
        }
        require(
            available >= _amount,
            "amount is higher than available to withdraw"
        );

        unchecked {
            uint256 yieldPerToken = earnedPerToken(stream.vault) / 2;
            yieldEarned = _amount * yieldPerToken;
            toWithdraw = (_amount + yieldEarned) / (10**(20 - decimals));
            streams[_id].lastUpdate += uint40(_amount / stream.amountPerSec);
            vaults[stream.vault].balance += yieldEarned;
            vaults[stream.vault].deposited -= _amount;
        }

        ERC4626(stream.vault).withdraw(toWithdraw, payee, address(this));
        emit Withdraw(_id, toWithdraw, payee);
    }

    /// @notice create Stream
    /// @param _vault vault to stream from
    /// @param _payee stream to
    /// @param _amountPerSec amount to stream per sec (20 decimals)
    function createStream(
        address _vault,
        address _payee,
        uint216 _amountPerSec
    ) external {
        require(
            msg.sender == owner || msg.sender == Factory(factory).bot(),
            "not owner or bot"
        );
        require(_amountPerSec > 0, "amount per sec cannot be 0");

        _updateVault(_vault);
        require(vaults[_vault].lastUpdate == block.timestamp, "in debt");

        (bool minted, uint256 id) = Factory(factory).mint(_payee);
        require(minted, "failed to mint token");

        vaults[_vault].totalPaidPerSec += _amountPerSec;
        streams[id] = Stream({
            amountPerSec: _amountPerSec,
            lastUpdate: uint40(block.timestamp),
            vault: _vault
        });

        emit StreamCreated(id, _vault, _payee, _amountPerSec);
    }

    /// @notice cancel and burn stream
    /// @param _id token id
    function cancelStream(uint256 _id) external {
        require(
            msg.sender == owner || msg.sender == Factory(factory).bot(),
            "not owner or bot"
        );
        require(
            ERC721(factory).ownerOf(_id) != address(0),
            "stream doesn't exist"
        );
        require(
            Factory(factory).tokenToPayer(_id) == address(this),
            "payer does not own stream"
        );

        uint256 withdrawableAmount = withdrawable(_id);
        withdraw(_id, withdrawableAmount);

        unchecked {
            vaults[streams[_id].vault].totalPaidPerSec -= streams[_id]
                .amountPerSec;
        }

        streams[_id] = Stream({
            amountPerSec: 0,
            lastUpdate: 0,
            vault: address(0)
        });

        bool burned = Factory(factory).burn(_id);
        require(burned, "failed to burn token");
        emit StreamCancelled(_id);
    }

    /// @notice modify current stream
    /// @param _id token id
    /// @param _newVault new vault to stream to
    /// @param _newAmountPerSec new amount to stream
    function modifyStream(
        uint256 _id,
        address _newVault,
        uint216 _newAmountPerSec
    ) external {
        require(msg.sender == owner, "not owner");
        require(
            ERC721(factory).ownerOf(_id) != address(0),
            "stream doesn't exist"
        );
        require(
            Factory(factory).tokenToPayer(_id) == address(this),
            "payer does not own stream"
        );

        uint256 withdrawableAmount = withdrawable(_id);
        withdraw(_id, withdrawableAmount);

        unchecked {
            vaults[streams[_id].vault].totalPaidPerSec -= streams[_id]
                .amountPerSec;
        }

        _updateVault(_newVault);
        require(vaults[_newVault].lastUpdate == block.timestamp, "in debt");

        vaults[_newVault].totalPaidPerSec += _newAmountPerSec;
        streams[_id] = Stream({
            amountPerSec: _newAmountPerSec,
            lastUpdate: uint40(block.timestamp),
            vault: _newVault
        });
    }

    /// @notice pauses stream without burning nft
    /// @param _id token id
    function pauseStream(uint256 _id) external {
        require(msg.sender == owner, "not owner");
        require(
            Factory(factory).tokenToPayer(_id) == address(this),
            "payer does not own stream"
        );
        uint256 withdrawableAmount = withdrawable(_id);
        withdraw(_id, withdrawableAmount);

        unchecked {
            vaults[streams[_id].vault].totalPaidPerSec -= streams[_id]
                .amountPerSec;
            streams[_id].lastUpdate = 0;
        }

        emit StreamPaused(_id);
    }

    /// @notice resume paused stream
    /// @param _id token id
    function resumeStream(uint256 _id) external {
        Stream storage stream = streams[_id];
        require(msg.sender == owner, "not owner");
        require(ERC721(factory).ownerOf(_id) != address(0), "stream burned");
        require(stream.lastUpdate == 0, "stream is not paused");
        require(
            Factory(factory).tokenToPayer(_id) == address(this),
            "payer does not own stream"
        );

        _updateVault(stream.vault);
        require(
            vaults[stream.vault].lastUpdate == block.timestamp,
            "payer in debt"
        );

        unchecked {
            streams[_id].lastUpdate = uint40(block.timestamp);
        }
        
        vaults[stream.vault].totalPaidPerSec += stream.amountPerSec;

        emit StreamResumed(_id);
    }

    /// @notice withdrawable tokens from stream id
    /// @param _id token id
    /// @return withdrawableAmount amount withdrawable (20 decimals)
    function withdrawable(uint256 _id)
        public
        view
        returns (uint256 withdrawableAmount)
    {
        Stream storage stream = streams[_id];
        Vault storage vault = vaults[stream.vault];

        uint256 delta = block.timestamp - vault.lastUpdate;
        uint256 totalStreamed = delta * vault.totalPaidPerSec;
        uint256 lastPayerUpdate;

        if (vault.balance >= totalStreamed) {
            lastPayerUpdate = block.timestamp;
        } else {
            lastPayerUpdate =
                vault.lastUpdate +
                (vault.balance / vault.totalPaidPerSec);
        }
        withdrawableAmount = delta * stream.amountPerSec;
    }

    /// @notice gets yield earned per token
    /// @param _vault vault
    /// @return earned yield earned per token (20 decimals)
    function earnedPerToken(address _vault)
        public
        view
        returns (uint256 earned)
    {
        uint8 decimals = ERC4626(_vault).asset().decimals();
        uint256 shares = ERC4626(_vault).balanceOf(address(this));
        uint256 redeemable = ERC4626(_vault).convertToAssets(shares);

        redeemable = redeemable * (10**(20 - decimals));
        uint256 deposited = vaults[_vault].deposited;
        earned = (redeemable - deposited) / deposited;
    }
}

