pragma solidity ^0.8.0;

import {ERC721} from "solmate/tokens/ERC721.sol";
import "./LlamaPayV2Payer.sol";
import "./BoringBatchable.sol";

contract LlamaPayV2Factory is ERC721("LlamaPayV2", "LLAMA-V2"), BoringBatchable {
    bytes32 constant INIT_CODEHASH =
        keccak256(type(LlamaPayV2Payer).creationCode);

    uint256 public tokenId;
    uint256 public payerIndex;
    address public payer;

    mapping(address => bool) public validContract;
    mapping(uint256 => address) public tokenToPayer;
    mapping(uint256 => address) public indexToContract;

    event PayerContractCreated(address payer, address payerContract);

    /// @notice create a llamapay contract
    /// @return payerContract llamapay contract
    function createLlamaPayContract()
        external
        returns (LlamaPayV2Payer payerContract)
    {
        payer = msg.sender;

        payerContract = new LlamaPayV2Payer{
            salt: bytes32(uint256(uint160(msg.sender)))
        }();
        address llamapay = address(payerContract);
        require(llamapay != address(0));
        validContract[llamapay] = true;
        indexToContract[payerIndex] = llamapay;

        unchecked {
            payerIndex++;
        }

        emit PayerContractCreated(msg.sender, llamapay);
    }

    /// @notice mint new stream token for payee
    /// @param _recipient payee
    /// @return bool true on successful mint
    /// @return id token id of minted token
    function mint(address _recipient) external returns (bool, uint256 id) {
        require(validContract[msg.sender], "not payer contract");

        id = tokenId;
        _safeMint(_recipient, id);

        tokenToPayer[id] = msg.sender;

        unchecked {
            tokenId++;
        }

        return (true, id);
    }

    /// @notice burn token
    /// @param _id token id
    /// @return bool true on successful mint
    function burn(uint256 _id) external returns (bool) {
        require(msg.sender == tokenToPayer[_id], "not payer contract");
        _burn(_id);
        return true;
    }

    function calculatePayerAddress(address _payer)
        external
        view
        returns (address predicted, bool deployed)
    {
        predicted = address(
            uint160(
                uint256(
                    keccak256(
                        abi.encodePacked(
                            bytes1(0xff),
                            address(this),
                            bytes32(uint256(uint160(_payer))),
                            INIT_CODEHASH
                        )
                    )
                )
            )
        );
        deployed = predicted.code.length != 0;
    }

    function tokenURI(uint256 _id)
        public
        view
        virtual
        override
        returns (string memory)
    {
        return "";
    }
}

