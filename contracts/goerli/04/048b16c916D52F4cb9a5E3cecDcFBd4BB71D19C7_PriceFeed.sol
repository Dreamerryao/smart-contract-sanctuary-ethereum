import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";

import "../interfaces/imports/IUniswapV2Router02.sol";

import "../libraries/SafeMath.sol";

import "../interfaces/helpers/IPriceFeed.sol";

import "../abstract/AbstractDependant.sol";
import "../Globals.sol";

contract PriceFeed is IPriceFeed, Initializable, AbstractDependant {
    using SafeMath for uint256;
    using EnumerableSet for EnumerableSet.UintSet;

    uint256 public constant USDT_DECIMALS = 10**6;
    uint256 public constant PRICE_CHANGE_THRESHOLD = 50 * PRECISION;
    uint256 public constant MAX_PRICE_LIST = 14;

    IUniswapV2Router02 public ammRouter;

    address public wethToken;
    address public deinToken;
    address public usdtToken;
    address public deinStakingAddress;
    address public capitalPoolAddress;

    mapping(Token => EnumerableSet.UintSet) internal _tokenPriceList; // token index -> prices
    uint256 public lastUpdateTime;

    event ETHPriceUpdated(uint256 time, uint256 newPrice);
    event DEINPriceUpdated(uint256 time, uint256 newPrice);

    function __PriceFeed_init(uint256 _deinPrice, uint256 _ethPrice) external initializer {
        // initilize the token prices at first time
        _tokenPriceList[Token.DEIN].add(_deinPrice);
        _tokenPriceList[Token.ETH].add(_ethPrice);
        lastUpdateTime = block.timestamp;
    }

    function setDependencies(IContractsRegistry _contractsRegistry)
        external
        override
        onlyInjectorOrZero
    {
        ammRouter = IUniswapV2Router02(_contractsRegistry.getAMMRouterContract());
        wethToken = _contractsRegistry.getWETHContract();
        deinToken = _contractsRegistry.getDEINContract();
        usdtToken = _contractsRegistry.getUSDTContract();
        deinStakingAddress = _contractsRegistry.getDEINStakingContract();
        capitalPoolAddress = _contractsRegistry.getCapitalPoolContract();
    }

    function howManyDEINsInUSDT(uint256 usdtAmount) external view override returns (uint256) {
        return usdtAmount.mul(DECIMALS18).tryDiv(_getAveragePriceInUSDT(Token.DEIN));
    }

    function howManyUSDTsInDEIN(uint256 deinAmount) external view override returns (uint256) {
        return deinAmount.mul(_getAveragePriceInUSDT(Token.DEIN)).uncheckedDiv(DECIMALS18);
    }

    function howManyETHsInUSDT(uint256 usdtAmount) external view override returns (uint256) {
        return usdtAmount.mul(DECIMALS18).tryDiv(_getAveragePriceInUSDT(Token.ETH));
    }

    function howManyUSDTsInETH(uint256 ethAmount) external view override returns (uint256) {
        return ethAmount.mul(_getAveragePriceInUSDT(Token.ETH)).uncheckedDiv(DECIMALS18);
    }

    function updateTokensPrice() external override {
        require(
            msg.sender == deinStakingAddress || msg.sender == capitalPoolAddress,
            "PF: No Access"
        );

        uint256 _elapsedTime = block.timestamp.sub(lastUpdateTime);

        if (_elapsedTime >= 1 hours) {
            _updateDEINPrice();
            _updateETHPrice();

            lastUpdateTime = block.timestamp;
        }
    }

    function _updateDEINPrice() internal {
        _updateTokenPrice(Token.DEIN, _getDEINPriceInUSDT());
    }

    function _updateETHPrice() internal {
        _updateTokenPrice(Token.ETH, _getETHPriceInUSDT());
    }

    function _updateTokenPrice(Token _token, uint256 _tokenPrice) internal {
        //only store 14 prices
        if (_tokenPriceList[_token].length() == MAX_PRICE_LIST) {
            uint256 _oldPrice = _tokenPriceList[_token].at(0);
            _tokenPriceList[_token].remove(_oldPrice);
        }

        uint256 _tokenPriceAverage = _getAveragePriceInUSDT(_token);
        uint256 priceChangeRatio = _tokenPrice.mul(PERCENTAGE_100).tryDiv(_tokenPriceAverage);

        uint256 priceChangePercentage = PERCENTAGE_100.trySub(priceChangeRatio);
        if (priceChangePercentage == 0)
            priceChangePercentage = priceChangeRatio.sub(PERCENTAGE_100);

        if (priceChangePercentage != 0 && priceChangePercentage < PRICE_CHANGE_THRESHOLD) {
            _tokenPriceList[_token].add(_tokenPrice);

            if (_token == Token.DEIN) emit DEINPriceUpdated(block.timestamp, _tokenPrice);
            else emit ETHPriceUpdated(block.timestamp, _tokenPrice);
        }
    }

    function _getAveragePriceInUSDT(Token _token) internal view returns (uint256 _total) {
        uint256 length = _tokenPriceList[_token].length();

        if (length != 0) {
            for (uint256 i = 0; i < _tokenPriceList[_token].length(); i = uncheckedInc(i)) {
                _total = _total.uncheckedAdd(_tokenPriceList[_token].at(i));
            }

            _total = _total.uncheckedDiv(length);
        }
    }

    function getTokenPriceList(Token _token) external view returns (uint256[] memory _list) {
        _list = new uint256[](_tokenPriceList[_token].length());

        for (uint256 i = 0; i < _tokenPriceList[_token].length(); i = uncheckedInc(i)) {
            _list[i] = _tokenPriceList[_token].at(i);
        }
    }

    function _getDEINPriceInUSDT() internal view virtual returns (uint256) {
        address[] memory pairs = new address[](3);
        pairs[0] = deinToken;
        pairs[1] = wethToken;
        pairs[2] = usdtToken;

        uint256[] memory amounts = ammRouter.getAmountsOut(DECIMALS18, pairs);

        return amounts[amounts.length - 1];
    }

    function _getETHPriceInUSDT() internal view virtual returns (uint256) {
        address[] memory pairs = new address[](2);

        pairs[0] = wethToken;
        pairs[1] = usdtToken;

        uint256[] memory amounts = ammRouter.getAmountsOut(DECIMALS18, pairs);

        return amounts[amounts.length - 1];
    }
}

