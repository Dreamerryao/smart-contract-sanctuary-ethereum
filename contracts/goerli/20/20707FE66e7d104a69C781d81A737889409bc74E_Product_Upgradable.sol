//*******************************************************************************************************************************************
contract Product_Upgradable is
    ContextUpgradeable,
    AccessControlEnumerableUpgradeable
{
    // enum Package {LICENSE_ANNUAL, LICENSE_PERPETUAL, LICENSE_FREE, LICENSE_HOURLY, LICENSE_MONTHLY, SUPPORT_STANDARD, SUPPORT_SILVER, SUPPORT_GOLD}
    // enum PackageCategory {SUPPORT and MAINTENANCE (Subscription-Based Service), LICENSE, TRAINING, PREMIUM FEATURES (add-ons, plugins, or other premium features), CONSULTING, CUSTOM DEVELOPMENT SERVICE}

    event ProductDeployed(string productName, string productURL);
    event ProductUpdated(string productNewName, string productURL);
    event ProductDeleted(string productURL);
    event PackageSet(
        uint256 packagePrice,
        uint8 package,
        string traceCode,
        string productURL,
        string productVersion
    );
    event PackageDeleyed(
        uint8 package,
        string traceCode,
        string productURL,
        string productVersion
    );
    event DependencyAdded(
        string dependencyURL,
        string dependencyVersion,
        string productURL,
        string productVersion
    );
    event DependencyDeleted(
        string dependencyURL,
        string dependencyVersion,
        string productURL,
        string productVersion
    );
    event Purchased(
        string productURL,
        string productVersion,
        uint8 package,
        uint256 packagePrice,
        uint256 number,
        address buyer,
        uint256 nftTokenId
    );
    event Settled(
        string productURL,
        string productVersion,
        uint8 package,
        uint256 packagePrice,
        uint256 number
    );
    event VersionAdded(string productURL, string productVersion);
    event VersionDeleted(string productURL, string productVersion);
    event ProductOwnerChanged(address account, string productURL);

    event PayeeAdded(
        address account,
        uint256 shares,
        string productURL,
        string packageCategory
    );
    event PayeeDeleted(
        address account,
        string productURL,
        string packageCategory
    );
    event PaymentReleased(
        address to,
        uint256 amount,
        string productURL,
        string packageCategory
    );

    event PackageCategoryAdded(string packageCategory);
    event PackageCategoryDeleted(string packageCategory);

    struct PackageCategories {
        mapping(string => uint) index;
        mapping(string => bool) isExist;
        uint8 count;
        string[] list;
    }

    struct PayeeInfo {
        uint256 share;
        uint256 withdrawnEarnings;
        uint256 earningsBeforeJoin;
        bool isExist;
    }

    struct ProductVersionInfo {
        EnumerableSet.Bytes32Set dependencies;
        mapping(uint8 => uint256) packagePrice;
        bool isExist;
    }

    struct ProductInfo {
        mapping(string => ProductVersionInfo) versions;
        mapping(string => uint256) undividedEarnings;
        mapping(string => uint256) totalShares;
        mapping(string => uint256) totalWithdrawn;
        mapping(string => uint256) dividedEarnings;
        mapping(string => uint256) earningsPerShare;
        // uint256 versionsLength;
        address ownerAddress;
        string url;
        bool isExist;
    }

    mapping(string => ProductInfo) products;
    mapping(bytes32 => PayeeInfo) payees; // bytes32 payeeHash = keccak256(abi.encodePacked(account, productURL, productVersion, packageCategory));
    PackageCategories packageCategories;

    address private _tokenAddr;
    address private _nftTokenAddr;
    address private _signer;
    uint256 private _timeout;

    using EnumerableSet for EnumerableSet.Bytes32Set;

    // using SafeERC20 for IERC20;

    function initialize(address owner) public initializer {
        _setupRole(DEFAULT_ADMIN_ROLE, owner);
    }

    function addProduct(
        string memory productName,
        string memory productURL,
        bytes memory ownershipSignature
    )
        public
        productNotRegistered(productURL)
        productOwnershipVerified(productURL, ownershipSignature)
    {
        require(bytes(productName).length != 0, "TP001");
        require(bytes(productURL).length != 0, "TP002");

        products[productURL].isExist = true;
        products[productURL].url = productURL;
        products[productURL].ownerAddress = msg.sender;

        emit ProductDeployed(productName, productURL);
    }

    //TODO: update product name
    function updateProduct(
        string memory productNewName,
        string memory productURL
    ) public isProductOwner(productURL) productRegistered(productURL) {
        require(bytes(productNewName).length != 0, "TP001");

        emit ProductUpdated(productNewName, productURL);
    }

    function delProduct(
        string memory productURL
    ) public productRegistered(productURL) isProductOwner(productURL) {
        require(bytes(productURL).length != 0, "TP002");

        for (uint8 i = 0; i < packageCategories.list.length; i++) {
            string memory packageCategory = packageCategories.list[i];
            if (packageCategories.isExist[packageCategory]) {
                require(
                    getTotalDeposited(productURL, packageCategory) == 0,
                    "TP029"
                );
            }
        }

        delete products[productURL];

        emit ProductDeleted(productURL);
    }

    function addVersion(
        string memory productURL,
        string memory productVersion
    ) public productRegistered(productURL) isProductOwner(productURL) {
        require(bytes(productURL).length != 0, "TP002");
        require(bytes(productVersion).length != 0, "TP004");

        require(
            !products[productURL].versions[productVersion].isExist,
            "TP005"
        );
        products[productURL].versions[productVersion].isExist = true;

        emit VersionAdded(productURL, productVersion);
    }

    function delVersion(
        string memory productURL,
        string memory productVersion
    ) public productRegistered(productURL) isProductOwner(productURL) {
        require(bytes(productURL).length != 0, "TP002");
        require(bytes(productVersion).length != 0, "TP004");

        require(products[productURL].versions[productVersion].isExist, "TP006");
        delete products[productURL].versions[productVersion];

        emit VersionDeleted(productURL, productVersion);
    }

    // TODO: delete traceCode
    function setPackages(
        uint256[] memory packagePrices,
        uint8[] memory packages,
        string[] memory traceCode,
        string memory productURL,
        string memory productVersion
    ) public productRegistered(productURL) isProductOwner(productURL) {
        require(bytes(productURL).length != 0, "TP002");
        require(bytes(productVersion).length != 0, "TP004");

        require(products[productURL].versions[productVersion].isExist, "TP006");
        require(packagePrices.length == packages.length, "TP007");
        require(packagePrices.length > 0, "TP008");

        for (uint256 i = 0; i < packagePrices.length; i++) {
            products[productURL].versions[productVersion].packagePrice[
                    packages[i]
                ] = packagePrices[i];

            emit PackageSet(
                packagePrices[i],
                packages[i],
                traceCode[i],
                productURL,
                productVersion
            );
        }
    }

    // TODO: Add delPackages
    function delPackages(
        uint8[] memory packages,
        string[] memory traceCode,
        string memory productURL,
        string memory productVersion
    ) public productRegistered(productURL) isProductOwner(productURL) {
        require(bytes(productURL).length != 0, "TP002");
        require(bytes(productVersion).length != 0, "TP004");

        require(products[productURL].versions[productVersion].isExist, "TP006");

        for (uint256 i = 0; i < packages.length; i++) {
            delete products[productURL].versions[productVersion].packagePrice[
                packages[i]
            ];

            emit PackageDeleyed(
                packages[i],
                traceCode[i],
                productURL,
                productVersion
            );
        }
    }

    function getPackageInfo(
        uint8 package,
        string memory productURL,
        string memory productVersion
    ) public view returns (uint256) {
        require(products[productURL].versions[productVersion].isExist, "TP006");
        uint256 price = products[productURL]
            .versions[productVersion]
            .packagePrice[package];
        return price;
    }

    function addDependencies(
        string[] memory dependenciesURL,
        string[] memory dependenciesVersion,
        string memory productURL,
        string memory productVersion,
        bytes memory inputSignature
    ) public productRegistered(productURL) isProductOwner(productURL) {
        require(bytes(productURL).length != 0, "TP002");
        require(bytes(productVersion).length != 0, "TP004");

        require(products[productURL].versions[productVersion].isExist, "TP006");
        require(dependenciesURL.length == dependenciesVersion.length, "TP009");
        require(dependenciesURL.length > 0, "TP010");

        bytes32 inputHash;
        bytes32 dependenciesURLHash;
        bytes32 dependenciesVersionHash;

        for (uint256 i = 0; i < dependenciesURL.length; i++) {
            dependenciesURLHash = keccak256(
                abi.encodePacked(dependenciesURLHash, dependenciesURL[i])
            );
            dependenciesVersionHash = keccak256(
                abi.encodePacked(
                    dependenciesVersionHash,
                    dependenciesVersion[i]
                )
            );
        }

        inputHash = keccak256(
            abi.encodePacked(
                dependenciesURLHash,
                dependenciesVersionHash,
                productURL,
                productVersion
            )
        );

        require(isValidSignature(_signer, inputHash, inputSignature), "TP011");

        for (uint256 i = 0; i < dependenciesURL.length; i++) {
            _addDependencies(
                dependenciesURL[i],
                dependenciesVersion[i],
                productURL,
                productVersion
            );
        }
    }

    function _addDependencies(
        string memory dependencyURL,
        string memory dependencyVersion,
        string memory productURL,
        string memory productVersion
    ) private {
        require(products[dependencyURL].isExist, "TP012");
        require(
            products[dependencyURL].versions[dependencyVersion].isExist,
            "TP013"
        );
        require(
            keccak256(abi.encodePacked(dependencyURL)) !=
                keccak256(abi.encodePacked(productURL)),
            "TP014"
        );

        bytes32 dependencyHash = keccak256(
            abi.encodePacked(dependencyURL, dependencyVersion)
        );
        require(
            !products[productURL]
                .versions[productVersion]
                .dependencies
                .contains(dependencyHash),
            "TP015"
        );
        products[productURL].versions[productVersion].dependencies.add(
            dependencyHash
        );

        emit DependencyAdded(
            dependencyURL,
            dependencyVersion,
            productURL,
            productVersion
        );
    }

    function delDependencies(
        string[] memory dependenciesURL,
        string[] memory dependenciesVersion,
        string memory productURL,
        string memory productVersion
    ) public productRegistered(productURL) isProductOwner(productURL) {
        require(bytes(productURL).length != 0, "TP002");
        require(bytes(productVersion).length != 0, "TP004");

        require(products[productURL].versions[productVersion].isExist, "TP006");
        require(dependenciesURL.length == dependenciesVersion.length, "TP009");
        require(dependenciesURL.length > 0, "TP010");

        for (uint256 i = 0; i < dependenciesURL.length; i++) {
            _delDependencies(
                dependenciesURL[i],
                dependenciesVersion[i],
                productURL,
                productVersion
            );
        }
    }

    function _delDependencies(
        string memory dependencyURL,
        string memory dependencyVersion,
        string memory productURL,
        string memory productVersion
    ) private {
        require(products[dependencyURL].isExist, "TP012");
        require(
            products[dependencyURL].versions[dependencyVersion].isExist,
            "TP013"
        );

        bytes32 dependencyHash = keccak256(
            abi.encodePacked(dependencyURL, dependencyVersion)
        );
        require(
            products[productURL].versions[productVersion].dependencies.contains(
                dependencyHash
            ),
            "TP012"
        );
        products[productURL].versions[productVersion].dependencies.remove(
            dependencyHash
        );

        emit DependencyDeleted(
            dependencyURL,
            dependencyVersion,
            productURL,
            productVersion
        );
    }

    function purchase_support(
        string[] memory productsURL,
        string[] memory productsVersion,
        uint256[] memory packagesPrices,
        uint8[] memory packages,
        string[] memory categories,
        string[] memory nftURIs,
        uint256 timeStamp,
        bytes memory inputSignature
    ) public {
        require(block.timestamp <= timeStamp + _timeout, "TP016");

        bytes32 inputHash = _inputHash_support(
            productsURL,
            productsVersion,
            packagesPrices,
            packages,
            categories,
            nftURIs,
            timeStamp
        );

        require(isValidSignature(_signer, inputHash, inputSignature), "TP011");

        uint256 _price = _calcPrice(
            productsURL,
            productsVersion,
            packagesPrices,
            packages
        );
        // IERC20(_tokenAddr).safeTransferFrom(msg.sender, address(this), _price);
        IERC20(_tokenAddr).transferFrom(msg.sender, address(this), _price);
        _purchase_support(
            productsURL,
            productsVersion,
            packagesPrices,
            packages,
            categories,
            nftURIs,
            msg.sender
        );
    }

    function purchase_license(
        string[] memory productsURL,
        string[] memory productsVersion,
        uint256[] memory packagesPrices,
        uint8[] memory packages,
        string[] memory categories,
        string memory nftURI,
        uint256 timeStamp,
        bytes memory inputSignature
    ) public {
        require(block.timestamp <= timeStamp + _timeout, "TP016");

        bytes32 inputHash = _inputHash_license(
            productsURL,
            productsVersion,
            packagesPrices,
            packages,
            categories,
            nftURI,
            timeStamp
        );

        require(isValidSignature(_signer, inputHash, inputSignature), "TP011");

        uint256 _price = _calcPrice(
            productsURL,
            productsVersion,
            packagesPrices,
            packages
        );
        // IERC20(_tokenAddr).safeTransferFrom(msg.sender, address(this), _price);
        IERC20(_tokenAddr).transferFrom(msg.sender, address(this), _price);
        _purchase_license(
            productsURL,
            productsVersion,
            packagesPrices,
            packages,
            categories,
            nftURI,
            msg.sender
        );
    }

    function _inputHash_license(
        string[] memory productsURL,
        string[] memory productsVersion,
        uint256[] memory packagesPrices,
        uint8[] memory packages,
        string[] memory categories,
        string memory nftURI,
        uint256 timeStamp
    ) private pure returns (bytes32) {
        bytes32 productHash;
        bytes32 versionHash;
        bytes32 priceHash;
        bytes32 packageHash;
        bytes32 categoryHash;

        for (uint256 i = 0; i < productsURL.length; i++) {
            productHash = keccak256(
                abi.encodePacked(productHash, productsURL[i])
            );
            versionHash = keccak256(
                abi.encodePacked(versionHash, productsVersion[i])
            );
            priceHash = keccak256(
                abi.encodePacked(priceHash, packagesPrices[i])
            );
            packageHash = keccak256(
                abi.encodePacked(packageHash, uint256(packages[i]))
            );
            categoryHash = keccak256(
                abi.encodePacked(categoryHash, categories[i])
            );
        }

        return
            keccak256(
                abi.encodePacked(
                    productHash,
                    versionHash,
                    priceHash,
                    packageHash,
                    categoryHash,
                    nftURI,
                    uint256(timeStamp)
                )
            );
    }

    function _inputHash_support(
        string[] memory productsURL,
        string[] memory productsVersion,
        uint256[] memory packagesPrices,
        uint8[] memory packages,
        string[] memory categories,
        string[] memory nftURIs,
        uint256 timeStamp
    ) private pure returns (bytes32) {
        bytes32 productHash;
        bytes32 versionHash;
        bytes32 priceHash;
        bytes32 packageHash;
        bytes32 categoryHash;
        bytes32 nftURIHash;

        for (uint256 i = 0; i < productsURL.length; i++) {
            productHash = keccak256(
                abi.encodePacked(productHash, productsURL[i])
            );
            versionHash = keccak256(
                abi.encodePacked(versionHash, productsVersion[i])
            );
            priceHash = keccak256(
                abi.encodePacked(priceHash, packagesPrices[i])
            );
            packageHash = keccak256(
                abi.encodePacked(packageHash, uint256(packages[i]))
            );
            categoryHash = keccak256(
                abi.encodePacked(categoryHash, categories[i])
            );
            nftURIHash = keccak256(abi.encodePacked(nftURIHash, nftURIs[i]));
        }

        return
            keccak256(
                abi.encodePacked(
                    productHash,
                    versionHash,
                    priceHash,
                    packageHash,
                    categoryHash,
                    nftURIHash,
                    uint256(timeStamp)
                )
            );
    }

    function _calcPrice(
        string[] memory productsURL,
        string[] memory productsVersion,
        uint256[] memory packagesPrices,
        uint8[] memory package
    ) private view returns (uint256) {
        uint256 _price = 0;
        uint256 _packagePrice = 0;

        for (uint256 i = 0; i < productsURL.length; i++) {
            _packagePrice = getPackageInfo(
                package[i],
                productsURL[i],
                productsVersion[i]
            );

            require(_packagePrice > 0, "TP017");
            require(packagesPrices[i] == _packagePrice, "TP017");

            _price += _packagePrice;
        }

        return _price;
    }

    function _purchase_support(
        string[] memory productsURL,
        string[] memory productsVersion,
        uint256[] memory packagesPrices,
        uint8[] memory packages,
        string[] memory categories,
        string[] memory nftURIs,
        address buyer
    ) private {
        for (uint256 i = 0; i < productsURL.length; i++) {
            products[productsURL[i]].undividedEarnings[
                categories[i]
            ] += packagesPrices[i];
            uint256 nftTokenId = NFTToken(_nftTokenAddr).mint(
                buyer,
                nftURIs[i]
            );
            emit Purchased(
                productsURL[i],
                productsVersion[i],
                packages[i],
                packagesPrices[i],
                1,
                buyer,
                nftTokenId
            );
        }
    }

    function _purchase_license(
        string[] memory productsURL,
        string[] memory productsVersion,
        uint256[] memory packagesPrices,
        uint8[] memory packages,
        string[] memory categories,
        string memory nftURI,
        address buyer
    ) private {
        products[productsURL[0]].undividedEarnings[
            categories[0]
        ] += packagesPrices[0];
        uint256 nftTokenId = NFTToken(_nftTokenAddr).mint(buyer, nftURI);
        emit Purchased(
            productsURL[0],
            productsVersion[0],
            packages[0],
            packagesPrices[0],
            1,
            buyer,
            nftTokenId
        );

        for (uint256 i = 1; i < productsURL.length; i++) {
            products[productsURL[i]].undividedEarnings[
                categories[i]
            ] += packagesPrices[i];
            emit Settled(
                productsURL[i],
                productsVersion[i],
                packages[i],
                packagesPrices[i],
                1
            );
        }
    }

    function addPayees(
        address[] memory payeesList,
        uint256[] memory sharesList,
        string memory productURL,
        string memory packageCategory
    ) public productRegistered(productURL) isProductOwner(productURL) {
        require(bytes(productURL).length != 0, "TP002");

        require(payeesList.length == sharesList.length, "TP018");
        require(payeesList.length > 0, "TP025");

        for (uint256 i = 0; i < payeesList.length; i++) {
            _addPayee(
                payeesList[i],
                sharesList[i],
                productURL,
                packageCategory
            );
        }
    }

    function _addPayee(
        address account,
        uint256 share,
        string memory productURL,
        string memory packageCategory
    ) private {
        require(account != address(0), "TP027");
        require(share > 0, "TP026");
        bytes32 payeeHash = keccak256(
            abi.encodePacked(account, productURL, packageCategory)
        );
        require(payees[payeeHash].isExist == false, "TP028");

        payees[payeeHash].isExist = true;
        payees[payeeHash].share = share;

        _updateEarnings(productURL, packageCategory);

        payees[payeeHash].earningsBeforeJoin =
            products[productURL].earningsPerShare[packageCategory] *
            share;
        products[productURL].totalShares[packageCategory] += share;

        emit PayeeAdded(account, share, productURL, packageCategory);
    }

    function delPayees(
        address[] memory payeesList,
        string memory productURL,
        string memory packageCategory
    ) public productRegistered(productURL) isProductOwner(productURL) {
        require(bytes(productURL).length != 0, "TP002");

        require(payeesList.length > 0, "TP025");

        for (uint256 i = 0; i < payeesList.length; i++) {
            _withrawAndRemove(payeesList[i], productURL, packageCategory);
        }
    }

    function withdrawAndRemove(
        address account,
        string memory productURL,
        string memory packageCategory
    ) public productRegistered(productURL) {
        require(
            products[productURL].ownerAddress == msg.sender ||
                account == msg.sender,
            "TP032"
        );

        _withrawAndRemove(account, productURL, packageCategory);
    }

    function _withrawAndRemove(
        address account,
        string memory productURL,
        string memory packageCategory
    ) private {
        require(account != address(0), "TP027");
        bytes32 payeeHash = keccak256(
            abi.encodePacked(account, productURL, packageCategory)
        );
        require(payees[payeeHash].isExist == true, "TP025");

        _withdraw(account, productURL, packageCategory);

        uint256 share = payees[payeeHash].share;
        products[productURL].totalShares[packageCategory] -= share;

        delete payees[payeeHash];

        emit PayeeDeleted(account, productURL, packageCategory);
    }

    function changeProductOwner(
        address account,
        string memory productURL
    ) public {
        require(
            (products[productURL].ownerAddress == msg.sender ||
                hasRole(DEFAULT_ADMIN_ROLE, msg.sender)),
            "TP021"
        );
        products[productURL].ownerAddress = account;

        emit ProductOwnerChanged(account, productURL);
    }

    function getProductOwner(
        string memory productURL
    ) public view returns (address) {
        return products[productURL].ownerAddress;
    }

    function withdraw(
        address account,
        string memory productURL,
        string memory packageCategory
    ) public productRegistered(productURL) {
        require(bytes(productURL).length != 0, "TP002");

        _withdraw(account, productURL, packageCategory);
    }

    function _withdraw(
        address account,
        string memory productURL,
        string memory packageCategory
    ) private {
        bytes32 payeeHash = keccak256(
            abi.encodePacked(account, productURL, packageCategory)
        );
        require(payees[payeeHash].isExist == true, "TP025");

        uint256 share = payees[payeeHash].share;

        uint256 withdrawnEarnings = payees[payeeHash].withdrawnEarnings;
        uint256 earningsBeforeJoin = payees[payeeHash].earningsBeforeJoin;

        _updateEarnings(productURL, packageCategory);

        uint256 earningsPerShare = products[productURL].earningsPerShare[
            packageCategory
        ];
        uint256 payment;

        if (
            (earningsPerShare * share) >
            (earningsBeforeJoin + withdrawnEarnings)
        ) {
            payment =
                (earningsPerShare * share) -
                (earningsBeforeJoin + withdrawnEarnings);
        }

        if (payment > 0) {
            payees[payeeHash].withdrawnEarnings += payment;
            products[productURL].totalWithdrawn[packageCategory] += payment;

            // IERC20(_tokenAddr).safeTransfer(account, payment);
            IERC20(_tokenAddr).transfer(account, payment);
            emit PaymentReleased(account, payment, productURL, packageCategory);
        }
    }

    function getTotalShares(
        string memory productURL,
        string memory packageCategory
    ) public view returns (uint256) {
        return products[productURL].totalShares[packageCategory];
    }

    function getTotalWithdrawn(
        string memory productURL,
        string memory packageCategory
    ) public view returns (uint256) {
        return products[productURL].totalWithdrawn[packageCategory];
    }

    function getTotalDeposited(
        string memory productURL,
        string memory packageCategory
    ) public view returns (uint256) {
        uint256 dividedEarnings = products[productURL].dividedEarnings[
            packageCategory
        ];
        uint256 undividedEarnings = products[productURL].undividedEarnings[
            packageCategory
        ];
        uint256 totalWithdrawn = products[productURL].totalWithdrawn[
            packageCategory
        ];

        return dividedEarnings + undividedEarnings - totalWithdrawn;
    }

    function getPayeeInfo(
        address account,
        string memory productURL,
        string memory packageCategory
    ) public view returns (uint256, uint256, uint256) {
        bytes32 payeeHash = keccak256(
            abi.encodePacked(account, productURL, packageCategory)
        );

        uint256 withdrawnEarnings = payees[payeeHash].withdrawnEarnings;
        uint256 earningsBeforeJoin = payees[payeeHash].earningsBeforeJoin;
        uint256 share = payees[payeeHash].share;

        uint256 earningsPerShare = _getUpdatedEarningsPerShare(
            productURL,
            packageCategory
        );
        uint256 deposited;

        if (
            (earningsPerShare * share) >
            (earningsBeforeJoin + withdrawnEarnings)
        ) {
            deposited =
                (earningsPerShare * share) -
                (earningsBeforeJoin + withdrawnEarnings);
        }

        return (share, withdrawnEarnings, deposited);
    }

    function _updateEarnings(
        string memory productURL,
        string memory packageCategory
    ) private {
        uint256 undividedEarnings = products[productURL].undividedEarnings[
            packageCategory
        ];
        uint256 totalShares = products[productURL].totalShares[packageCategory];

        if (undividedEarnings > 0 && totalShares > 0) {
            products[productURL].earningsPerShare[
                packageCategory
            ] += (undividedEarnings / totalShares);
