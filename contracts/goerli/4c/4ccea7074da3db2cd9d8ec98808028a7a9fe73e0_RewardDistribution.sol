     * @dev allow to get version for EIP712 domain dynamically. We do not need to init EIP712 anymore
     *   
     */
    function _EIP712VersionHash() internal pure override returns (bytes32) {
        return keccak256(bytes(version()));
    }

    /**
    * @dev The hash of the name parameter for the EIP712 domain based on contract name. We do not need to init EIP712 anymore
    *   
    */
    function _EIP712NameHash() internal pure override returns (bytes32) {
        return keccak256(bytes(name()));
    }

    /**
    * @dev Distribute the reward from a proposalId to the voters.
    *   
    */
    function multiTransferERC20TightlyPacked(
        IERC20Upgradeable token,
        address dao,
        uint256 proposalId,
        bytes32[] memory addressesAndAmounts
    ) public onlyOwner onlyUtilityToken(dao, token) {
        uint256 totalAmount;
        uint256 amount;
        address to;
        uint256 length = addressesAndAmounts.length;
        for (uint256 i = 0; i < length;) {
            amount = uint256(uint96(uint256(addressesAndAmounts[i])));
            to = address(uint160(uint256(addressesAndAmounts[i] >> 96)));
            if(!rewardReceivedForProposal[to][proposalId]) _processTransfer(token, dao, to, amount, proposalId);
            unchecked {
                totalAmount += amount;
                i++;
            }
        }
        emit TokenDistribution(dao, address(token), totalAmount);
        require(IGatewayDAO(dao).getPaidFee(proposalId) >= totalAmount, "RewardDistribution: Not enough fee paid");
    }

     /**
     * @dev Voter claim reward for a proposalId.
     *   
     */
    function claimReward(
        IERC20Upgradeable token,
        address dao,
        uint256[] memory proposalIds
    ) external onlyUtilityToken(dao, token) {
        _processClaim(token, dao, _msgSender(), proposalIds, 0);
    }

     /**
     * @dev Voter sign a claim reward signature for a proposalId that can be used to claim reward for them in exchange for a fee in the reward token.
     *   
     */
    function claimRewardBySig(
        IERC20Upgradeable token,
        address dao,
        uint256[] memory proposalIds,
        uint256 fee,
        uint256 expiry,
        uint256 gluwaNonce,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) external onlyUtilityToken(dao, token) {
        require(
            expiry >= block.timestamp,
            "RewardDistribution: Sig is expired"
        );
        address to = ECDSAUpgradeable.recover(
            EIP712Upgradeable._hashTypedDataV4(
                keccak256(
                    abi.encode(
                        _CLAIM_TYPEHASH,
                        proposalIds.length,
                        fee,
                        expiry,
                        gluwaNonce
                    )
                )
            ),
            v,
            r,
            s
        );
        _useNonce(to, gluwaNonce);
        _processClaim(token, dao, to, proposalIds, fee);
    }

     /**
     * @dev Calculate the total amount of reward for a voter and a list of proposalIds.
     *   
     */
    function calculateClaim(
        address dao,
        address to,
        uint256[] memory proposalIds
    ) external view returns (uint256 transferTotal) {
        uint256 length = proposalIds.length;
        require(length > 0, "RewardDistribution: ProposalIds length is 0");
        uint256 proposalId;
        uint256 totalFee;
        uint256 totalWeight;
        uint256 voterWeight;
        while (length > 0) {
            proposalId = proposalIds[length - 1];
            totalFee = IGatewayDAO(dao).getPaidFee(proposalId);
            require(totalFee > 0, "RewardDistribution: No fee paid");
            require(!rewardReceivedForProposal[to][proposalId], "RewardDistribution: Reward already received");

            totalWeight = IGatewayDAO(dao).getTotalVoteWeight(proposalId);
            voterWeight = IGatewayDAO(dao).getVoterWeight(proposalId, to);

            transferTotal += _calculateTransfer(dao, to, (totalFee * voterWeight) / totalWeight, proposalId);
            unchecked {
                if (length > 0) --length;
            }
        }
    }

    function _calculateTransfer(
        address dao,
        address to,
        uint256 amount,
        uint256 proposalId
    ) internal view returns (uint256) {
        if (IGatewayDAO(dao).hasVoted(proposalId, to))
            return amount;
    }

    function _processTransfer(
        IERC20Upgradeable token,
        address dao,
        address to,
        uint256 amount,
        uint256 proposalId
    ) internal returns (uint256) {
        uint256 finalAmount = _calculateTransfer(dao, to, amount, proposalId);
        if (finalAmount > 0) {
            rewardReceivedForProposal[to][proposalId] = true;
            require(token.transfer(to, finalAmount), "RewardDistribution: Transfer failed");
        }
    }

    function _processClaim(
        IERC20Upgradeable token,
        address dao,
        address to,
        uint256[] memory proposalIds,
        uint256 fee
    ) internal {
        uint256 length = proposalIds.length;
        require(length > 0, "RewardDistribution: ProposalIds length is 0");
        uint256 transferTotal;
        uint256 proposalId;
        uint256 totalFee;
        uint256 totalWeight;
        uint256 voterWeight;
        while (length > 0) {
            proposalId = proposalIds[length - 1];
            totalFee = (IGatewayDAO(dao).getPaidFee(proposalId) * 9) / 10;

            require(totalFee > 0, "RewardDistribution: No fee paid");
            require(!rewardReceivedForProposal[to][proposalId], "RewardDistribution: Reward already received");

            totalWeight = IGatewayDAO(dao).getTotalVoteWeight(proposalId);
            voterWeight = IGatewayDAO(dao).getVoterWeight(proposalId, to);

            rewardReceivedForProposal[to][proposalId] = true;
            transferTotal += _calculateTransfer(dao, to, (totalFee * voterWeight) / totalWeight, proposalId);
            unchecked {
                if (length > 0) --length;
            }
        }
        if (fee > 0) {
            require(fee <= transferTotal, "RewardDistribution: Fee greater than reward");
            transferTotal -= fee;
            token.transfer(_msgSender(), fee);
        }
        token.transfer(to, transferTotal);
        emit TokenDistribution(dao, address(token), transferTotal);
    }
