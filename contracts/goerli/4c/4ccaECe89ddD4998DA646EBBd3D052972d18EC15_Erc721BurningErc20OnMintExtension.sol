pragma solidity ^0.8.7;

import {IERC20} from "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import {IERC721} from "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/ERC20Burnable.sol";
import "@manifoldxyz/creator-core-solidity/contracts/extensions/ERC721/ERC721CreatorExtensionApproveTransfer.sol";
import "@alchemist.wtf/token-extensions/contracts/IErc721BurningErc20OnMint.sol";

contract Erc721BurningErc20OnMintExtension is ERC721CreatorExtensionApproveTransfer, IErc721BurningErc20OnMint {
    address public erc20TokenAddress;
    address public creatorAddress;

    constructor(address creator_) {
        creatorAddress = creator_;
    }

    function setErc20TokenAddress(address erc20TokenAddress_) public override onlyOwner {
        erc20TokenAddress = erc20TokenAddress_;
    }

    function mint() external override returns (uint256) {
        return IERC721CreatorCore(creatorAddress).mintExtension(msg.sender);
    }

    function approveTransfer(
        address from,
        address to,
        uint256 tokenId
    ) external override returns (bool) {
        //Get mintpass address for x
        //check if it's a mint
        if (from == address(0) && to != address(0)) {
            require(erc20TokenAddress != address(0), "erc20TokenAddress undefined");
            uint256 balanceOfAddress = IERC20(erc20TokenAddress).balanceOf(to);
            require(balanceOfAddress >= 1, "user does not hold a token");
            ERC20Burnable(erc20TokenAddress).burnFrom(to, 1);
        }
        return true;
    }
}

