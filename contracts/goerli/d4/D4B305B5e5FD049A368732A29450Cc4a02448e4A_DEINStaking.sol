pragma solidity ^0.8.7;

import "@openzeppelin/contracts/utils/Strings.sol";

import "./abstract/AbstractStaking.sol";
import "./interfaces/IDEINStaking.sol";
import "./interfaces/tokens/erc20permit-upgradeable/IERC20PermitUpgradeable.sol";
import "./interfaces/helpers/IPriceFeed.sol";
import "./interfaces/IDEINNFTStaking.sol";

import "./tokens/ERC1155Upgradeable.sol";

contract DEINStaking is AbstractStaking, IDEINStaking, ERC1155Upgradeable {
    using EnumerableSet for EnumerableSet.UintSet;
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    address public claimVoting;
    address public swapEvent;
    address public liquidityMiningStakingETH;
    address public deinNFTStaking;

    IPriceFeed public priceFeed;

    mapping(uint256 => uint256) public override voterMultipliers; // stake duration (months) => multiplier , for voter

    mapping(uint256 => VestingInfo) public vestings; // nftid => vesting info

    modifier onlyAccess() {
        require(
            _msgSender() == claimVoting ||
                _msgSender() == swapEvent ||
                _msgSender() == liquidityMiningStakingETH ||
                _msgSender() == deinNFTStaking,
            "DEINStaking : Not allowed"
        );
        _;
    }

    modifier forceUpdateTokensPrice() {
        priceFeed.updateTokensPrice();
        _;
    }

    function __DEINStaking_init() external initializer {
        __Staking_init();
        __ERC1155_init("");

        _setVoterMultiplier();
        isDeinStaking = true;
    }

    function setDependencies(IContractsRegistry _contractsRegistry)
        external
        override
        onlyInjectorOrZero
    {
        deinToken = IERC20(_contractsRegistry.getDEINContract());
        rewardPool = _contractsRegistry.getRewardPoolContract();
        compoundPool = ICompoundPool(_contractsRegistry.getCompoundPoolContract());
        priceFeed = IPriceFeed(_contractsRegistry.getPriceFeedContract());

        claimVoting = _contractsRegistry.getClaimVotingContract();
        swapEvent = _contractsRegistry.getSwapEventContract();
        liquidityMiningStakingETH = _contractsRegistry.getLiquidityMiningStakingETHContract();
        deinNFTStaking = _contractsRegistry.getDEINNFTStakingContract();
    }

    /// @dev the output URI will be: "https://token-cdn-domain/<tokenId>"
    function uri(uint256 tokenId) public view override returns (string memory) {
        return string(abi.encodePacked(super.uri(0), Strings.toString(tokenId)));
    }

    /// @dev this is a correct URI: "https://token-cdn-domain/"
    function setBaseURI(string calldata newURI) external onlyOwner {
        _setURI(newURI);
    }

    function _beforeTokenTransfer(
        address,
        address from,
        address to,
        uint256[] memory ids,
        uint256[] memory amounts,
        bytes memory
    ) internal override {
        for (uint256 i = 0; i < ids.length; i = uncheckedInc(i)) {
            if (amounts[i] != 1) {
                // not an NFT
                continue;
            }

            if (from == address(0)) {
                // mint happened
                stakerStaking[to].add(ids[i]);
            } else if (to == address(0)) {
                // burn happened
                stakerStaking[from].remove(ids[i]);
            } else {
                // transfer happened
                stakerStaking[from].remove(ids[i]);
                stakerStaking[to].add(ids[i]);

                stakers[ids[i]].staker = to;
            }
        }
    }

    function _setVoterMultiplier() internal {
        uint256[] memory multipliers = new uint256[](5);
        multipliers[0] = 1;
        multipliers[1] = 3;
        multipliers[2] = 10;
        multipliers[3] = 40;
        multipliers[4] = 100;

        for (uint256 i = 0; i < lockingPeriods.length; i = uncheckedInc(i)) {
            voterMultipliers[lockingPeriods[i]] = multipliers[i];
        }
    }

    function stakeWithPermit(
        uint256 _amountDEIN,
        uint256 _lock,
        uint8 _v,
        bytes32 _r,
        bytes32 _s
    ) external override nonReentrant {
        require(_amountDEIN > 0, "DEINStaking: can't stake 0 tokens");

        IERC20PermitUpgradeable(address(deinToken)).permit(
            _msgSender(),
            address(this),
            _amountDEIN,
            MAX_INT,
            _v,
            _r,
            _s
        );

        deinToken.transferFrom(_msgSender(), address(this), _amountDEIN);
        _stake(_msgSender(), _amountDEIN, _lock, false);
    }

    /// @dev if _stakingPosition new , the _stakingPositionInput should be locking period
    /// otherwise should be tokenId
    function stakeFor(
        address _user,
        uint256 _amountDEIN,
        uint256 _stakingPositionInput,
        StakingPosition _stakingPosition,
        bool _isVesting
    ) external override onlyAccess {
        require(_amountDEIN > 0, "DEINStaking: can't stake 0 tokens");

        if (_isVesting) {
            vestings[stakingIndex] = VestingInfo(_amountDEIN, 0);
        }

        if (_stakingPosition == StakingPosition.NEW)
            _stake(_user, _amountDEIN, _stakingPositionInput, _isVesting);
        else _addToStake(_user, _stakingPositionInput, _amountDEIN);
    }

    function stake(uint256 _amountDEIN, uint256 _lock) external override nonReentrant {
        require(_amountDEIN > 0, "DEINStaking: can't stake 0 tokens");

        deinToken.transferFrom(_msgSender(), address(this), _amountDEIN);
        _stake(_msgSender(), _amountDEIN, _lock, false);
    }

    function withdraw(uint256 _tokenId)
        external
        override
        nonReentrant
        updateReward(_tokenId)
        forceUpdateTokensPrice
    {
        require(ownerOf(_tokenId) == _msgSender(), "DEINStaking: Not a token owner");

        require(canWithdraw(_tokenId), "DEINStaking: Withdrawal is not ready");

        uint256 _stakedAmount = stakers[_tokenId].staked;
        require(
            ICompoundPool(compoundPool).canWithdraw(_getAmountbyLiquidation(_stakedAmount), false),
            "DEINStaking: Not allowed"
        );

        uint256 _amount = _withdraw(_tokenId, _stakedAmount);

        // claim rewards of NFT before burning
        uint256 reward = _getReward(_tokenId);

        _burnNFT(_msgSender(), _tokenId);

        deinToken.safeTransfer(_msgSender(), _amount.add(reward));

        emit Withdrawn(_msgSender(), _tokenId, _amount, reward);
    }

    // claim vesting amount monthly for user swap old bmi
    function claim(uint256 _tokenId, uint256 _amount)
        public
        override
        nonReentrant
        updateReward(_tokenId)
        forceUpdateTokensPrice
    {
        require(ownerOf(_tokenId) == _msgSender(), "DEINStaking: Not a token owner");

        require(stakers[_tokenId].isVesting, "DEINStaking: No vesting for this NFT");

        // vesitng allowed in case locking period not ended,otherwise user can withdraw all
        require(!canWithdraw(_tokenId), "DEINStaking: Withdrawal is ready");

        StakingInfo storage info = stakers[_tokenId];
        VestingInfo storage vesting = vestings[_tokenId];

        uint256 _dueAmount =
            _getDueVestedAmount(
                info.startTime,
                info.lockingPeriod,
                vesting.locked,
                vesting.claimed
            );

        if (_dueAmount > 0) {
            require(_dueAmount >= _amount, "DEINStaking: Invalid amount");

            require(
                ICompoundPool(compoundPool).canWithdraw(_getAmountbyLiquidation(_amount), false),
                "DEINStaking: Not allowed"
            );

            info.staked = info.staked.sub(_amount);
            vesting.claimed = vesting.claimed.add(_amount);

            uint256 amountByLiquidiation = _withdraw(_tokenId, _amount);

            deinToken.safeTransfer(_msgSender(), amountByLiquidiation);

            emit CLAIMED(amountByLiquidiation, _tokenId, _msgSender());
        }
    }

    function getDueVestedAmount(uint256 _tokenId)
        external
        view
        returns (uint256 dueAmount, uint256 dueAmountByLiquidation)
    {
        StakingInfo memory info = stakers[_tokenId];
        VestingInfo memory vesting = vestings[_tokenId];

        dueAmount = _getDueVestedAmount(
            info.startTime,
            info.lockingPeriod,
            vesting.locked,
            vesting.claimed
        );

        dueAmountByLiquidation = _getAmountbyLiquidation(dueAmount);
    }

    function _getDueVestedAmount(
        uint256 _startTime,
        uint256 _lockingPeriod,
        uint256 _locked,
        uint256 _claimed
    ) internal view returns (uint256) {
        // sub 1 for an edge case if user claim at the same moment of locking end time
        uint256 _elapsedMonth =
            block.timestamp.trySub(_startTime).trySub(1).uncheckedDiv(PERIOD_DURATION);

        return _locked.mul(_elapsedMonth).uncheckedDiv(_lockingPeriod).sub(_claimed);
    }

    ///@dev accessed by compound pool
    function liquidate(
        uint256 _liquidationAmount,
        uint256,
        uint256,
        address _receiver
    ) external override onlyCompoundPool forceUpdateTokensPrice {
        if (_liquidationAmount <= totalPool) {
            liquidationAmount = liquidationAmount.add(_liquidationAmount);

            deinToken.safeTransfer(_receiver, _liquidationAmount);

            emit Liquidated(_liquidationAmount, 0, 0, _receiver);
        }
    }

    ///@dev apply penalty to a NFT of the voter
    function applyVoterPenalty(
        uint256[] calldata _tokenIds,
        uint256[] calldata _penaltyAmounts,
        address user
    ) external override onlyAccess forceUpdateTokensPrice {
        require(_tokenIds.length == _penaltyAmounts.length, "DEINStaking : length mismatch");

        for (uint256 i = 0; i < _tokenIds.length; i = uncheckedInc(i)) {
            uint256 _tokenId = _tokenIds[i];
            _updateReward(_tokenId);
            uint256 _penaltyAmount = _penaltyAmounts[i];

            uint256 tokenPenalty;
            uint256 reward;
            if (_penaltyAmount < stakers[_tokenId].staked) {
                tokenPenalty = _penaltyAmount;
                stakers[_tokenId].staked = stakers[_tokenId].staked.sub(_penaltyAmount);
            } else {
                tokenPenalty = stakers[_tokenId].staked;
                reward = _getReward(_tokenId);
                IDEINNFTStaking(deinNFTStaking).removeLockedNFT(user, _tokenId);

                _burnNFT(_msgSender(), _tokenId);
            }

            uint256 amountByLiquidiation = _withdraw(_tokenId, tokenPenalty);

            deinToken.safeTransfer(rewardPool, amountByLiquidiation);
            if (reward > 0) {
                deinToken.safeTransfer(user, reward);
            }
            emit VoterPenaltyApplied(tokenPenalty, _tokenId);
        }
    }

    function claimReward(uint256[] memory _tokenIds)
        external
        override
        nonReentrant
        forceUpdateTokensPrice
    {
        uint256 reward = _calculateReward(_tokenIds);

        if (reward > 0) {
            deinToken.safeTransfer(_msgSender(), reward);
        }
    }

    /// @dev if _stakingPosition new , the _stakingPositionInput should be locking period
    /// otherwise should be tokenId
    function restakeReward(
        uint256[] memory _tokenIds,
        uint256 _stakingPositionInput,
        StakingPosition _stakingPosition
    ) external override nonReentrant {
        uint256 reward = _calculateReward(_tokenIds);

        if (reward > 0) {
            address _staker = _msgSender();
            if (_stakingPosition == StakingPosition.NEW)
                _stake(_staker, reward, _stakingPositionInput, false);
            else _addToStake(_staker, _stakingPositionInput, reward);
        }
    }

    function _addToStake(
        address _staker,
        uint256 _tokenId,
        uint256 _amountDEIN
    ) internal updateReward(_tokenId) forceUpdateTokensPrice {
        require(ownerOf(_tokenId) == _staker, "DEINStaking: Not a token owner");

        totalPool = totalPool.add(_amountDEIN);

        totalPoolWithPower = totalPoolWithPower.add(
            _amountDEIN.mul(_getStakerMultiplier(_tokenId))
        );

        stakers[_tokenId].staked = stakers[_tokenId].staked.add(_amountDEIN);

        emit AddedToStake(_staker, _tokenId, _amountDEIN);
    }

    function _stake(
        address _staker,
        uint256 _amountDEIN,
        uint256 _lock,
        bool _isVesting
    )
        internal
        updateReward(stakingIndex)
        checkLockingPeriod(_lock, _isVesting)
        forceUpdateTokensPrice
    {
        totalPool = totalPool.add(_amountDEIN);

        uint256 multiplier = stakedMultipliers[_lock];

        if (!(_isVesting && _lock == Locking24Month)) {
            totalPoolWithPower = totalPoolWithPower.add(_amountDEIN.mul(multiplier));
        }
        stakers[stakingIndex].staker = _staker;
        stakers[stakingIndex].staked = _amountDEIN;
        stakers[stakingIndex].startTime = block.timestamp;
        stakers[stakingIndex].lockingPeriod = _lock;
        stakers[stakingIndex].isVesting = _isVesting;

        emit Staked(_staker, stakingIndex, _amountDEIN, _lock);

        _mintNewNFT(_staker);
    }

    function _mintNewNFT(address _staker) internal {
        _mint(_staker, stakingIndex, 1, ""); // mint NFT

        emit StakedNFTMinted(stakingIndex, _staker);

        stakingIndex = stakingIndex.tryAdd(1);
    }

    function _burnNFT(address staker, uint256 id) internal {
        _burn(staker, id, 1); // burn NFT
        delete stakers[id];
        emit StakedNFTBurned(id, staker);
    }

    ///@notice applied by voting multiplier (M2)
    function _getNFTVotingPower(uint256 _tokenId) internal view returns (uint256 _votingPower) {
        _votingPower = stakers[_tokenId].staked;

        if (stakingHasBenefits(_tokenId)) {
            _votingPower = _votingPower.mul(voterMultipliers[stakers[_tokenId].lockingPeriod]);
        }
    }

    ///@notice applied by voting multiplier (M2)
    function getVotingPower(uint256[] calldata _tokenIds)
        external
        view
        override
        returns (uint256 _totalVotingPower)
    {
        for (uint256 i = 0; i < _tokenIds.length; i = uncheckedInc(i)) {
            uint256 tokenID = _tokenIds[i];
            uint256 _votingPower = _getNFTVotingPower(tokenID);
            _totalVotingPower = _totalVotingPower.add(_votingPower);
        }
    }

    // aggregate all user's nfts power
    function getUserStakingPower(address _user)
        external
        view
        override
        returns (uint256 _totalStakingPower)
    {
        //TODO get user nfts locked for voting
        for (uint256 i = 0; i < stakerStaking[_user].length(); i = uncheckedInc(i)) {
            uint256 _tokenId = stakerStaking[_user].at(i);

            if (!stakingHasBenefits(_tokenId)) continue;

            uint256 _staked = stakers[_tokenId].staked;
            uint256 _multiplier = _getStakerMultiplier(_tokenId);

            _totalStakingPower = _totalStakingPower.add(_staked.mul(_multiplier));
        }
    }
}

