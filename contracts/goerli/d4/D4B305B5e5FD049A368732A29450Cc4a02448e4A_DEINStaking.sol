        if (!stakingHasBenefits(_stakingIndex)) return 0;

        StakingInfo memory info = stakers[_stakingIndex];

        uint256 rewardsDifference = rewardPerToken().sub(info.rewardPerTokenPaid);

        uint256 newlyAccumulated =
            info
