import "@uniswap/lib/contracts/libraries/TransferHelper.sol";
import "@uniswap/v2-periphery/contracts/interfaces/IUniswapV2Router02.sol";

contract MultiSwap {
    address private constant SWAP_ROUTER = 0x1b02dA8Cb0d097eB8D57A175b88c7D8b47997506;
    address public constant UNI = 0x1f9840a85d5aF5bf1D1762F925BDADdC4201F984;
    address private constant WETH = 0xB4FBF271143F4FBf7B91A5ded31805e42b2208d6;

    IUniswapV2Router02 public immutable sushiRouter = IUniswapV2Router02(SWAP_ROUTER);

    constructor() {}

    function safeTransferWithApprove(uint256 amountIn, address routerAddress) internal {
        TransferHelper.safeTransferFrom(UNI, msg.sender, address(this), amountIn);
        TransferHelper.safeApprove(UNI, routerAddress, amountIn);
    }

    function multiSwap(
        uint256 deadline,
        uint256 amountIn,
        address[] calldata paths,
        uint256[] calldata allocs
    ) external returns (uint256[] memory amounts) {
        safeTransferWithApprove(amountIn, address(sushiRouter));
        for (uint i = 0; i < allocs.length; i++) {
            address[] memory path = new address[](2);
            path[0] = WETH;
            path[1] = paths[i];
            uint256 amountOutMin = 1;
            address recipient = address(this);
            amounts = sushiRouter.swapExactETHForTokens(amountOutMin, path, recipient, deadline);
        }
    }
}