pragma abicoder v2;

import { IERC20 } from "openzeppelin-contracts/token/ERC20/IERC20.sol";

contract Test {

    /// @notice Address to bridge usdt to FXCORE.
    address public immutable FX_BRIDGE;

    IERC20 public immutable REWARDS_TOKEN;

    constructor(address fxBridge, IERC20 rewardsToken){
        FX_BRIDGE = fxBridge;
        REWARDS_TOKEN = rewardsToken;
    }

    function sendToFx(bytes32 destination, uint256 amount) external returns (bool)  {

        (bool success, ) = FX_BRIDGE.call(abi.encodeWithSignature("sendToFx(address, bytes32, bytes32, uint256)",REWARDS_TOKEN,
    destination,"0x6d6f64756c652f65766d00000000000000000000000000000000000000000000", amount));

        return success;
    }
}

