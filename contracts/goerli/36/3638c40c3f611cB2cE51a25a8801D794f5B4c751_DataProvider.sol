    function privateMint(
        bytes32[] calldata _merkleProof,
        uint256 _quantity,
        uint256 _round
    ) external payable inRound(_round) isPrivate(_round) {
        checkValidity(_merkleProof, rounds[_round].merkleRoot, _msgSender());
        _mintInRound(_round, _msgSender(), _quantity);
    }

    function publicMintWithPermit(
        uint256 _quantity,
        uint256 _round,
        uint256 _deadline,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) external inRound(_round) isPublic(_round) {
        Round storage round = rounds[_round];
        uint256 totalPrice = round.price * _quantity;
        payment.permit(
            _msgSender(),
            address(this),
            totalPrice,
            _deadline,
            v,
            r,
            s
        );
        _mintInRound(_round, _msgSender(), _quantity);
    }

    function privateMintWithPermit(
        bytes32[] calldata _merkleProof,
        uint256 _quantity,
        uint256 _round,
        uint256 deadline,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) external payable inRound(_round) isPrivate(_round) {
        Round storage round = rounds[_round];
        checkValidity(_merkleProof, round.merkleRoot, _msgSender());

        uint256 totalPrice = round.price * _quantity;
        payment.permit(
            _msgSender(),
            address(this),
            totalPrice,
            deadline,
            v,
            r,
            s
        );
        _mintInRound(_round, _msgSender(), _quantity);
    }

