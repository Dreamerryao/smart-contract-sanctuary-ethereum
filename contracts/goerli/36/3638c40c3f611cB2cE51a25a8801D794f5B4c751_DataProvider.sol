        bytes32[] calldata _merkleProof,
        bytes32 _root,
        address _to
    ) public pure {
        bytes32 leaf = keccak256(abi.encodePacked(_to));
        if (!MerkleProof.verify(_merkleProof, _root, leaf))
            revert IncorrectProof();
    }

    function withdraw() external payable onlyOwner {
        if (address(payment) == address(0)) {
            (bool success, ) = payable(_msgSender()).call{
                value: address(this).balance
            }("");
            require(success);
        } else {
            uint256 balance = payment.balanceOf(address(this));
            payment.transfer(_msgSender(), balance);
        }
    }

    /**
     * @notice It is allowed to set the random seed before all tokens are minted.
     */
