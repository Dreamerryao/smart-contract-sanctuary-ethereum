abstract contract NeowizERC721 is
    ERC721Burnable,
    ERC721Royalty,
    ERC721WithPermit,
    ERC2771Context,
    Ownable
{
    error NotExistingRound();
    error ZeroMaxTotalSupply();
    error WrongSaleRound();
    error RoundNotStarted();
    error InvalidTimestamp();
