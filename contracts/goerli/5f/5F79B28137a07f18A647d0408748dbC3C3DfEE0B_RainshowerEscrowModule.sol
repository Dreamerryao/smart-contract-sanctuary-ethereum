    /*///////////////////////////////////////////////////////////////
                       RAINSHOWER UNISWAP MODULE
     Uniswap module that allows tokens to be swapped in the borrow
    //////////////////////////////////////////////////////////////*/


contract RainshowerEscrowModule
{
    /*///////////////////////////////////////////////////////////////
                            DELEGATECALL STORAGE
    //////////////////////////////////////////////////////////////*/
    /*
        A contract can have 4 states:
        0 - Not funded with tokens
        1 - Funded and open for anyone to take
        2 - Funded with collateral, swapped the token, in progress
        3 - Closed
    */
    address borrowMaker;
    address borrowTaker;
    uint8 public state = 0;

    /*///////////////////////////////////////////////////////////////
                            MODULE STORAGE
         Modules are a way to simplify and extend rainshower to
         be used for any purpouse where token borrows are wanted.
    //////////////////////////////////////////////////////////////*/
    address public moduleAddress;

    // data LAYOUT:
    // address token0 - Token thats deposited onFundWithTokens;
    // uint256 token0Amount - amount of token0 to be deposited;
    // address token1 - Token thats deposited onFundWithMarginAndOpen;
    // uint256 token1Amount - amount of token1 to be deposited;

    bytes public data;
    
    function onFundWithTokens () external returns(bool res) {
        require (state == 0, "MUST_BE_FRESH");
        state = 1;

        address token0;
        uint256 token0Amount;
        (
            token0, token0Amount,,
        ) = abi.decode(data, (
            address, uint256, address, uint256
        ));

        res = IERC20Minimal(token0).transferFrom(msg.sender, address(this), token0Amount);
        require(res);
        borrowMaker = msg.sender;

        return res;
    }

    function onFundWithMarginAndOpen (uint256 _extraMargin) external returns(bool res) {
        require (state == 1, "FUND_WITH_TOKENS");
        state = 2;

        address token1;
        uint256 token1Amount;
        (
            ,, token1, token1Amount
        ) = abi.decode(data, (
            address, uint256, address, uint256
        ));

        res = IERC20Minimal(token1).transferFrom(msg.sender, address(this), token1Amount);
        require(res);
        borrowTaker = msg.sender;

        res = true;
        return res;
    }


    function onClose () external returns(bool res) {
        require (state == 2, "FUND_WITH_MARGIN");
        state = 3;

        address token0;
        uint256 token0Amount;
        address token1;
        uint256 token1Amount;
        (
            token0, token0Amount, token1, token1Amount
        ) = abi.decode(data, (
            address, uint256, address, uint256
        ));

        res = IERC20Minimal(token0).transfer(borrowTaker, token0Amount);
        require(res);
        res = IERC20Minimal(token1).transfer(borrowMaker, token1Amount);
        require(res);

        return res;
    }

    function onLiquidation () external returns(bool res) {
        return false;
    }
}

