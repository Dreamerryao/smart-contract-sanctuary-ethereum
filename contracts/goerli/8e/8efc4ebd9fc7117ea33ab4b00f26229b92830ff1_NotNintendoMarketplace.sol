pragma solidity ^0.8.17;

/// @title NotNintendoMarketplace
/// @author NotNintendo

import "solmate/tokens/ERC1155.sol";
import "solmate/auth/Owned.sol";
import "solmate/utils/ReentrancyGuard.sol";
import "openzeppelin-contracts/utils/cryptography/ECDSA.sol";

contract NotNintendoMarketplace is ERC1155, Owned, ReentrancyGuard {

    using ECDSA for bytes32;

    string public name;
    string public symbol;
    address public signer;

    struct Token {
        string uri;
        uint price;
        uint currentSupply;
        uint maxSupply;
        bool mintPublicActive;
        bool mintSignageActive;
    }

    mapping(uint => Token) public tokens;

    /*//////////////////////////////////////////////////////////////
                           CONSTRUCTOR
    //////////////////////////////////////////////////////////////*/

    constructor(
        string memory _name,
        string memory _symbol
    )Owned(msg.sender){
        name = _name;
        symbol = _symbol;
    }

    /*//////////////////////////////////////////////////////////////
                          MINT FUNCTIONS
    //////////////////////////////////////////////////////////////*/

    /// @notice Mint a variable amount of a specific token ID.
    /// @param id The token ID to mint.
    /// @param amount The amount of tokens to mint.
    function mintPublic(uint id, uint amount) external payable nonReentrant supplyCheck(id, amount) {
        require(tokens[id].mintPublicActive, "NotNintendoMarketplace: Minting is not active");
        require(msg.value == tokens[id].price * amount, "NotNintendoMarketplace: Incorrect amount of ETH sent");
        _mint(msg.sender, id, amount, "");
        _mintNumericAdjustments(id, amount);
    }

    /// @notice Mint a variable amount of a specific token ID to a specific address.
    /// @param tokenReceiver The address to mint tokens to.
    /// @param id The token ID to mint.
    /// @param amount The amount of tokens to mint.
    /// @param signature The signature 
    function mintSignage(address tokenReceiver, uint id, uint amount, bytes memory signature) external nonReentrant supplyCheck(id, amount) {
        require(tokens[id].mintSignageActive, "NotNintendoMarketplace: Minting is not active");
        require(_verifyAddressSigner(_hashMessage(tokenReceiver, id, amount, address(this)), signature), "NotNintendoMarketplace: Invalid signature");
        _mint(tokenReceiver, id, amount, "");
        _mintNumericAdjustments(id, amount);
    }

    /*//////////////////////////////////////////////////////////////
                          BURN FUNCTION
    //////////////////////////////////////////////////////////////*/

    /// @notice Burn a specific amount of a specific token ID, as long as the msg.sender is the owner.
    /// @param id The token ID to burn.
    /// @param amount The amount of tokens to burn.
    /// @dev This function calls an internal function which emits a TransferSingle event.
    function burn(uint id, uint amount) external nonReentrant {
        require(balanceOf[msg.sender][id] >= amount, "NotNintendoMarketplace: Not enough tokens to burn");
        _burn(msg.sender, id, amount);
        _burnNumericAdjustments(id, amount);
    }

    /*//////////////////////////////////////////////////////////////
                         HELPER FUNCTIONS
    //////////////////////////////////////////////////////////////*/

    /// @notice Adjustment to the current supply of a token made after a burn.
    /// @param id The token ID to adjust the current supply for.
    /// @param amount The amount to adjust the current supply by.
    function _burnNumericAdjustments(uint id, uint amount) internal {
        tokens[id].currentSupply -= amount;
    }

    /// @notice Adjustment to the current supply of a token made after a mint.
    /// @param id The token ID to adjust the current supply for.
    /// @param amount The amount to adjust the current supply by.
    function _mintNumericAdjustments(uint id, uint amount) internal {
        tokens[id].currentSupply += amount;
    }

    /// @notice Internal function to verify the signer address set in the contract matches the signer address used to create the signature.
    /// @param messageHash The hash of the message to verify.
    /// @param signature The signature to verify.
    function _verifyAddressSigner(bytes32 messageHash, bytes memory signature) internal view returns (bool) {
        return signer == messageHash.toEthSignedMessageHash().recover(signature);
    }

    /// @notice Internal function to hash the message used to verify the signature.
    /// @param tokenReceiver The address to mint tokens to.
    /// @param id The token ID to mint.
    /// @param amount The amount of tokens to mint.
    /// @param thisContract The address of the contract.
    function _hashMessage(address tokenReceiver, uint id, uint amount, address thisContract) private pure returns (bytes32) {
        return keccak256(abi.encodePacked(tokenReceiver, id, amount, thisContract));
    }

    /*//////////////////////////////////////////////////////////////
                             MODIFIERS
    //////////////////////////////////////////////////////////////*/

    modifier supplyCheck(uint id, uint amount) {
        require(tokens[id].currentSupply + amount <= tokens[id].maxSupply, "NotNintendoMarketplace: Max supply reached");
        _;
    } 

    /*//////////////////////////////////////////////////////////////
                              METADATA
    //////////////////////////////////////////////////////////////*/

    /// @notice Returns a string representation of a token URI for a given token ID.
    /// @param id The token ID to return the URI for.
    /// @return URI returned the given token ID.
    function uri(uint id) public view override returns (string memory) {
        return tokens[id].uri;
    }

    /*//////////////////////////////////////////////////////////////
                          ADMIN FUNCTIONS
    //////////////////////////////////////////////////////////////*/

    /// @notice Owner only function to set the URI for a specific token ID.
    /// @param id The token ID to set the URI for.
    /// @param newURI The new URI for the token ID.
    function updateTokenURI(uint id, string memory newURI) external onlyOwner {
        tokens[id].uri = newURI;
    }

    /// @notice Owner only function to update the price of a specific token ID.
    /// @param id The token ID to update the price for.
    /// @param newPrice The price of the given token ID in represented in wei.
    function updateTokenPrice(uint id, uint newPrice) external onlyOwner {
        tokens[id].price = newPrice;
    }

    /// @notice Owner only function to update the max supply of a specific token ID.
    /// @param id The token ID to update the max supply for.
    /// @param newMaxSupply The new max supply for the token ID.
    /// @dev If the maxSupply value for a token is left to its default value of 0, it will be considered unlimited.
    function updateTokenMaxSupply(uint id, uint newMaxSupply) external onlyOwner {
        tokens[id].maxSupply = newMaxSupply;
    }

    /// @notice Owner only function to update the address that creates off-chain signatures.
    /// @param newSigner The new address to create off-chain signatures.
    function updateSigner(address newSigner) external onlyOwner {
        signer = newSigner;
    }

    /// @notice Owner only function to flip the mintPublicActive boolean for a specific token ID.
    /// @param id The token ID to flip the mintPublicActive boolean for.
    function flipMintPublicActive(uint id) external onlyOwner {
        tokens[id].mintPublicActive = !tokens[id].mintPublicActive;
    }

    /// @notice Owner only function to flip the mintSignageActive boolean for a specific token ID.
    /// @param id The token ID to flip the mintSignageActive boolean for.
    function flipMintSignageActive(uint id) external onlyOwner {
        tokens[id].mintSignageActive = !tokens[id].mintSignageActive;
    }

    /// @notice Owner only function to withdraw all ETH from the contract.
    function withdrawETH() external onlyOwner {
        payable(msg.sender).transfer(address(this).balance);
    }

}