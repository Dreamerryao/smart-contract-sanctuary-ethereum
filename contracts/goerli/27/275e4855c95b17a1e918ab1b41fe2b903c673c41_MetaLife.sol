pragma solidity ^0.8.4;



contract MetaLife is MarketFee {
    // 初始化代币名称和代号
    constructor() ERC20("Meta Life", "META") {
        // 铸造2100个币
        _mint(msg.sender, 2100);
    }

    // 判断是否收手续费
    function shouldTakeFee(address sender, address recipient)
        internal
        view
        returns (bool)
    {
        if (_isExcludedFromFee[sender] || _isExcludedFromFee[recipient]) {
            return false;
        }
        if (recipient == uniswapV2Pair || sender == uniswapV2Pair) {
            return true;
        }
        return false;
    }

    // 收取手续费
    function takeFee(address sender, uint256 amount)
        internal
        returns (uint256)
    {
        uint256 lpAmount = _takeFee(sender, amount);
        return amount - lpAmount;
    }

    // 重写父类发送方法
    function _transfer(
        address sender,
        address recipient,
        uint256 amount
    ) internal virtual override {
        // 如果不在交换中
        if (isLock) {
            // 调用父类发送方法
            super._transfer(sender, recipient, amount);
        } else {
            if (shouldSwapTo(sender)) {
                swapAndToDividend();
            }
            // transfer token
            if (shouldTakeFee(sender, recipient)) {
                uint256 transferAmount = takeFee(sender, amount);
                super._transfer(sender, recipient, transferAmount);
            } else {
                super._transfer(sender, recipient, amount);
            }
        }
    }
}