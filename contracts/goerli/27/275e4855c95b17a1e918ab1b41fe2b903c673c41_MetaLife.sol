abstract contract MarketFee is Owner, ERC20, DexBase, ExcludedFromFeeList{
    // 收取多少手续费
    uint256 public constant handlingFee = 3;
    // 用于接收手续费的钱包
    address constant marketAddress = address(0x7840bD65C939491f696A5eE3D05eB7a0df6448e0);

    constructor() {
        // 给本合约分配最大额度
        approve(address(this), type(uint256).max);
        // 给swap路由分配最大额度
        _approve(address(this), address(uniswapV2Router), type(uint256).max);
    }

    // 收取手续费
    function _takeFee(address sender, uint256 amount)
        internal
        returns (uint256)
    {
        // 计算出要收取的金额
        uint256 marketAmount = (amount * handlingFee) / 100;
        // 收取手续费到本合约存着
        super._transfer(sender, address(this), marketAmount);
        // 返回手续费数量
        return marketAmount;
    }

    // 交换币
    function shouldSwapTo(address sender) internal view returns (bool) {
        if (
            // 不在交换中
            !isLock &&
            // 买家不是币对
            sender != uniswapV2Pair
        ) {
            return true;
        } else {
            return false;
        }
    }

    function swapAndToDividend() internal lockTheSwap {
        address[] memory path = new address[](2);
        path[0] = address(this);
        path[1] = address(0xdAC17F958D2ee523a2206206994597C13D831ec7);
        uniswapV2Router.swapExactTokensForETHSupportingFeeOnTransferTokens(
            0,
            0, // accept any amount of ETH
            path,
            marketAddress,
            block.timestamp
        );
    }
}
