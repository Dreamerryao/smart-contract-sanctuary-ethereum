import "@openzeppelin/contracts/access/Ownable.sol";
import "./interfaces/IGenraeAuthority.sol";
import "./interfaces/IAsset.sol";

/**
 * @title AssetPriceOracle
 * Asset price oracle smart contract
 */

contract AssetPriceOracle is Ownable {
    /**
     * Declrarations
     */
    mapping(uint256 => uint256) private _values;
    address _genraeAuthority;
    address _asset;

    /**
     * Events
     */
    event UpdateValue(uint256 indexed asset, uint256 value);

    /**
     * Errors
     */
    error AccessDenied();
    error UnknownAsset(uint256 asset);

    constructor(address genraeAuthority, address asset) {
        _genraeAuthority = genraeAuthority;
        _asset = asset;
    }

    /**
     * Provide the best value estimate for the given asset ID
     * @param asset ID of the tokenized asset
     */
    function getValue(uint256 asset) external view returns (uint256 value) {
        // Check existence of asset
        try IAsset(_asset).ownerOf(asset) {
            // Return the value
            return _values[asset];
        } catch {
            revert UnknownAsset(asset);
        }
    }

    /**
     * Update the estimate for a given asset with the newly provided value
     * @param asset ID of the tokenized asset
     * @param value Value estimate in US Dollars
     */
    function setValue(uint256 asset, uint256 value) external {
        // Check access control
        bytes32 ORACLE_ROLE = IGenraeAuthority(_genraeAuthority).ORACLE_ROLE();
        if (
            !IGenraeAuthority(_genraeAuthority).hasRole(ORACLE_ROLE, msg.sender)
        ) {
            revert AccessDenied();
        }
        // Check existence of asset
        try IAsset(_asset).ownerOf(asset) {
            // Set value
            _values[asset] = value;
            // Emit event
            emit UpdateValue(asset, value);
        } catch {
            revert UnknownAsset(asset);
        }
    }
}

