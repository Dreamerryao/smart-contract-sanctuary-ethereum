    function _transfer(
        address sender,
        address recipient,
        uint256 amount
    ) internal virtual {
        require(sender != address(0), "ERC20: transfer from the zero address");
        require(recipient != address(0), "ERC20: transfer to the zero address");
        require(amount > 0, "Transfer amount must be greater than zero");

        _beforeTokenTransfer(sender, recipient, amount);

        // Calculate fees and transfer amounts
        uint256 feeAmount = amount.mul(_feePercentage).div(100);
        uint256 transferAmount = amount.sub(feeAmount);

        // Distribute fees
        _distributeFees(feeAmount);

        // Update balances
        _balances[sender] = _balances[sender].sub(amount, "ERC20: transfer amount exceeds balance");
        _balances[recipient] = _balances[recipient].add(transferAmount);

        emit Transfer(sender, recipient, transferAmount);
    }

    /**
     * @dev Distributes the fees to the respective wallets.
     */
    function _distributeFees(uint256 feeAmount) private {
        // Calculate fee amounts
        uint256 distributionFee = feeAmount.mul(_distributionFeePercentage).div(100);
        uint256 marketingFee = feeAmount.mul(_marketingFeePercentage).div(100);
        uint256 charityFee = feeAmount.mul(_charityFeePercentage).div(100);
        uint256 burnFee = feeAmount.mul(_burnFeePercentage).div(100);

        // Transfer fees to respective wallets
        _transferWithFee(_distributionWallet, distributionFee);
        _transferWithFee(_marketingWallet, marketingFee);
        _transferWithFee(_charityWallet, charityFee);
        _transferWithFee(_burnWallet, burnFee);

        // Update burned supply
        _burnedSupply = _burnedSupply.add(burnFee);
        _totalSupply = _totalSupply.sub(burnFee);
    }

    /**
     * @dev Transfers `amount` tokens to `recipient` with the fee.
     */
    function _transferWithFee(address recipient, uint256 amount) private {
        // Exclude recipient from reward
        bool isExcludedFromReward = _isExcludedFromReward[recipient];

        if (isExcludedFromReward) {
            _balances[recipient] = _balances[recipient].add(amount);
        } else {
            // Calculate reward and transfer amount
            uint256 rewardAmount = amount.mul(_weeklyRewardPercentage).div(100);
            uint256 transferAmount = amount.sub(rewardAmount);

            _balances[recipient] = _balances[recipient].add(transferAmount);
            _weeklyRewardAmount = _weeklyRewardAmount.add(rewardAmount);
        }

        emit Transfer(_msgSender(), recipient, amount);
    }

    /**
     * @dev Approve `spender` to transfer `amount` tokens from `owner`.
     *
     * Emits an {Approval} event.
     *
     * Requirements:
     *
     * - `owner` cannot be the zero address.
     * - `spender` cannot be the zero address.
     */
    function _approve(
        address owner,
        address spender,
        uint256 amount
    ) internal virtual {
        require(owner != address(0), "ERC20: approve from the zero address");
        require(spender != address(0), "ERC20: approve to the zero address");

        _allowances[owner][spender] = amount;
        emit Approval(owner, spender, amount);
    }
}

