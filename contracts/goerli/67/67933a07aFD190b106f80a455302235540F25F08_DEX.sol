import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract DEX {
    using SafeMath for uint256;
    uint256 public totalLiquidity;
    mapping(address => uint256) public liquidity;

    IERC20 token;

    constructor(address token_addr) {
        token = IERC20(token_addr);
    }

    function init(uint256 tokens) public payable returns (uint256) {
        require(
            totalLiquidity == 0,
            "totalLiquidity has been initialized and the value has exceed 0"
        );
        totalLiquidity = address(this).balance;
        liquidity[msg.sender] = totalLiquidity;
        require(token.transferFrom(msg.sender, address(this), tokens));
        return totalLiquidity;
    }

    function price(
        uint256 input,
        uint256 input_reserve,
        uint256 output_reserve
    ) public view returns (uint256) {
        uint256 input_with_fee = input.mul(997);
        uint256 numerator = input_with_fee.mul(output_reserve);
        uint256 dominator = input_reserve.mul(1000).add(input_with_fee);
        return numerator.div(dominator);
    }

    function ethToToken() public payable returns (uint256) {
        uint256 token_reserve = token.balanceOf(address(this));
        // the price function is always the after-state. After input asset injected.
        uint256 token_bought = price(
            msg.value,
            address(this).balance.sub(msg.value),
            token_reserve
        );
        require(
            token.transfer(msg.sender, token_bought),
            "transfer of token has failed"
        );
        return token_bought;
    }

    function tokenToEth(uint256 tokens) public returns (uint256) {
        uint256 eth_reserve = address(this).balance;
        uint256 eth_bought = price(
            tokens,
            token.balanceOf(address(this)),
            eth_reserve
        );
        require(token.transferFrom(msg.sender, address(this), tokens));
        (bool success, ) = msg.sender.call{value: eth_bought}("");
        require(success, "Fialed to transfer Eth");
        return eth_bought;
    }

    // Deposit both token and ETH - pass the eth through the payable and token through the token.transferFrom
    function deposit() public payable returns (uint256) {
        uint256 eth_reserve = address(this).balance.sub(msg.value);
        uint256 token_reserve = token.balanceOf(address(this));
        uint256 token_amount = (msg.value.mul(token_reserve) / eth_reserve).add(
            1
        );
        uint256 eth_amount = msg.value.mul(totalLiquidity) / eth_reserve;
        totalLiquidity = totalLiquidity.add(eth_amount);
        liquidity[msg.sender] = liquidity[msg.sender].add(eth_amount);
        require(token.transferFrom(msg.sender, address(this), token_amount));
        return eth_amount;
    }

    function withdraw(uint256 amount) public returns (uint256, uint256) {
        uint256 token_reserve = token.balanceOf(address(this));
        uint256 eth_reserve = address(this).balance;
        uint256 token_amount = amount.mul(token_reserve) / totalLiquidity;
        uint256 eth_amount = amount.mul(eth_reserve) / totalLiquidity;
        totalLiquidity = totalLiquidity.sub(eth_amount);
        liquidity[msg.sender] = liquidity[msg.sender].sub(eth_amount);
        (bool success, ) = msg.sender.call{value: eth_amount}("");
        require(success, "ETH transfer has failled");
        require(token.transfer(msg.sender, token_amount));
        return (eth_amount, token_amount);
    }

