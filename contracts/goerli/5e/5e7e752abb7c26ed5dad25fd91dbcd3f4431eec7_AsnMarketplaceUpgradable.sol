    function startAuction(
        address payable tokenOwner,
        uint256 startingPrice,
        uint256 salePrice,
        uint256 collectableId,
        uint256 ntokens
    ) internal {
        _setTokenSaleStatus(collectableId, libERC1155Fee.TYPE_AUCTION);
        _setBasePrice(collectableId, startingPrice);
        _setSalePrice(collectableId, salePrice);
        tokenSaleData[collectableId].collectableOwner = tokenOwner;
        tokenSaleData[collectableId].nTokens = ntokens;

        emit StartAuction(tokenOwner, collectableId, ntokens, startingPrice);
    }

    function cancelAuction(uint256 collectableId) public nonReentrant {
        require(
            saleStatus[collectableId] == libERC1155Fee.TYPE_AUCTION &&
                auction[collectableId].isComplete == false,
            "There is no active auction"
        );

        require(
            tokenSaleData[collectableId].collectableOwner == msg.sender,
            "Not owner of the token"
        );

        require(
            auction[collectableId].account == address(0),
            "cannot cancel if bidding has started "
        );

        tokenerc1155.safeTransferFrom(
            address(this),
            tokenSaleData[collectableId].collectableOwner,
            collectableId,
            tokenSaleData[collectableId].nTokens,
            ""
        );

        delete auction[collectableId];
        delete saleStatus[collectableId];
        delete sale[collectableId];

        emit Cancel(collectableId, tokenSaleData[collectableId].nTokens);
    }

    function endAuction(uint256 collectableId) public nonReentrant {
        // When there is no active bidding, return the asset to the owner
        // else transfer the asset to the heigest bidder and initiate the payout process
        require(
            saleStatus[collectableId] == libERC1155Fee.TYPE_AUCTION &&
                auction[collectableId].isComplete == false,
            "There is no active auction"
        );

        if (auction[collectableId].account == address(0)) {
            tokenerc1155.safeTransferFrom(
                address(this),
                tokenSaleData[collectableId].collectableOwner,
                collectableId,
                tokenSaleData[collectableId].nTokens,
                ""
            );
            delete saleStatus[collectableId];
            delete auction[collectableId];
        }

        auction[collectableId].isComplete = true;

        emit EndAuction(
            tokenSaleData[collectableId].collectableOwner,
            auction[collectableId].account,
            collectableId,
            tokenSaleData[collectableId].nTokens,
            auction[collectableId].value
        );
    }

    function placeBid(
        address bidder,
        libERC1155Fee.PAY_TYPE paymentType,
        uint256 collectableId,
        uint256 amount,
        uint256 nonce,
        bytes calldata signature
    ) public payable nonReentrant {
        // require(
        //     verifySignature(signature) == msg.sender,
        //     "Restricted to verified users"
        // );

        require(
            paymentType == libERC1155Fee.PAY_TYPE.CRYPTO ||
                paymentType == libERC1155Fee.PAY_TYPE.FIAT,
            "Payment Type should be either CRYPTO:1 or FIAT:2"
        );

        require(
            saleStatus[collectableId] == libERC1155Fee.TYPE_AUCTION &&
                auction[collectableId].isComplete == false,
            "There is no active auction"
        );
        require(
            amount > auction[collectableId].value,
            "Amount is lesser than the previous bid amount or base price"
        );
        // require(
        //     address(msg.sender).isContract(),
        //     "Contracts cannot do bidding"
        // );

        if (paymentType == libERC1155Fee.PAY_TYPE.FIAT) {
            require(
                hasRole(ADMIN_ROLE, _msgSender()) || owner() == _msgSender(),
                "Restricted to admin."
            );
        } else {
            bidder = msg.sender;
        }

        _returnCurrentBid(collectableId);

        _setBidder(
            collectableId,
            payable(bidder),
            amount,
            msg.value,
            paymentType
        );

        emit PlaceBid(
            collectableId,
            tokenSaleData[collectableId].nTokens,
            msg.sender,
            msg.value
        );
    }

    function claimNft(uint256 collectableId) public payable nonReentrant {
        require(
            saleStatus[collectableId] == libERC1155Fee.TYPE_AUCTION,
            "There is no active auction"
        );

        require(
            auction[collectableId].isComplete == true,
            "The Auction is not completed yet"
        );

        if (auction[collectableId].mode == libERC1155Fee.PAY_TYPE.FIAT) {
            require(
                hasRole(ADMIN_ROLE, _msgSender()) || owner() == _msgSender(),
                "Restricted to admin."
            );
        } else {
            require(
                msg.sender == auction[collectableId].account,
                "Wrong bidder address"
            );
            require(
                msg.value >=
                    auction[collectableId].value -
                        auction[collectableId].deposit,
                "The entered balance amount is wrong"
            );
        }

        tokenerc1155.safeTransferFrom(
            address(this),
            auction[collectableId].account,
            collectableId,
            tokenSaleData[collectableId].nTokens,
            ""
        );
        _payout(collectableId, auction[collectableId].value);
        delete saleStatus[collectableId];
        delete auction[collectableId];
    }

