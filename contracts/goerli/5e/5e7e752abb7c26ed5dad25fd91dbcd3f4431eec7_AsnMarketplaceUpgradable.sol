    function _mint(
        libERC1155Fee.Maintainer[] memory creators,
        address receiver,
        uint256 collectableId,
        uint256 ntokens,
        bytes memory IPFS_hash
    ) internal onlyMinter {
        for (uint256 i = 0; i < creators.length; i++) {
            tokenSaleData[collectableId].creators.push(creators[i]);
        }

        IERC1155.Royalties memory royalties = IERC1155.Royalties(
            creators[0].account,
            creators[0].value
        );

        tokenerc1155.mint(
            receiver,
            collectableId,
            ntokens,
            IPFS_hash,
            royalties
        );
    }

    // As part of the lazy minting this mint function can be called by rootAdmin
    function mintAndTransfer(
        libERC1155Fee.Maintainer[] memory creators,
        address receiver,
        uint256 collectableId,
        uint256 ntokens,
        bytes memory IPFS_hash
    ) public onlyMinter nonReentrant {
        require(
            !_isShareExceedsHalf(creators),
            "Creators share shouldn't exceed half of price"
        );

        _mint(creators, receiver, collectableId, ntokens, IPFS_hash);
        emit Buy(address(0), receiver, collectableId, ntokens, 0);
    }

    function mintAndStartAuction(
        uint256 startingPrice,
        uint256 salePrice,
        libERC1155Fee.Maintainer[] memory creators,
        address payable collectableOwner,
        uint256 collectableId,
        uint256 ntokens,
        bytes memory IPFS_hash
    ) public onlyMinter {
        require(
            !_isShareExceedsHalf(creators),
            "Creators share shouldn't exceed half of price"
        );

        require(
            saleStatus[collectableId] != libERC1155Fee.TYPE_AUCTION,
            "There is already have an active auction"
        );

        _mint(creators, address(this), collectableId, ntokens, IPFS_hash);

        startAuction(
            collectableOwner,
            startingPrice,
            salePrice,
            collectableId,
            ntokens
        );
    }

