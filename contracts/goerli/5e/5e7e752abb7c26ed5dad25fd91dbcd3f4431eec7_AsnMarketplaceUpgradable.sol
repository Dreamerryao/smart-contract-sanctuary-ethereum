library libERC1155Fee {
    uint256 constant TYPE_DEFAULT = 0;
    uint256 constant TYPE_SALE = 1;
    uint256 constant TYPE_AUCTION = 2;

    enum PAY_TYPE {
        NONE,
        CRYPTO,
        FIAT
    }

    struct Part {
        address payable account;
        uint256 value;
        uint256 deposit;
        bool isComplete;
        PAY_TYPE mode;
        uint256 timestamp;
    }

    struct Maintainer {
        address payable account;
        uint256 value; //percent;
    }

    struct Data {
        uint256 nTokens;
        address payable collectableOwner;
        Maintainer[] creators;
        bool isSecondary;
    }
}

