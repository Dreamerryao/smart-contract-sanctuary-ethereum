        uint256 salePrice,
        libERC1155Fee.Maintainer[] memory creators,
        address payable collectableOwner,
        uint256 collectableId,
        uint256 ntokens,
        bytes memory IPFS_hash
    ) public onlyMinter {
        require(
            !_isShareExceedsHalf(creators),
            "Creators share shouldn't exceed half of price"
        );

        _mint(creators, address(this), collectableId, ntokens, IPFS_hash);

        startSale(collectableOwner, salePrice, collectableId, ntokens);
    }

