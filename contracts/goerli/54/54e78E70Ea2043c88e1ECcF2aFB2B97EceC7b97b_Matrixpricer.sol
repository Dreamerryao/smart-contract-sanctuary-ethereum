    /*** Assets You Are In ***/

    /**
     * @notice Returns the assets an account has entered
     * @param account The address of the account to pull assets for
     * @return A dynamic list with the assets the account has entered
     */
    function getAssetsIn(address account) external view returns (DepToken[] memory) {
        DepToken[] memory assetsIn = accountAssets[account];

        return assetsIn;
    }

    /**
     * @notice Returns whether the given account is entered in the given asset
     * @param account The address of the account to check
     * @param depToken The depToken to check
     * @return True if the account is in the asset, otherwise false.
     */
    function checkMembership(address account, DepToken depToken) external view returns (bool) {
        return markets[address(depToken)].accountMembership[account];
    }

    /**
     * @notice Add an array of assets to be included in account liquidity calculation
     * @param depTokens The list of depTokens (identified by their addresses) to enter
     * @return Success indicator for whether each corresponding market was entered
     */
    function enterMarkets(address[] memory depTokens) override public returns (uint[] memory) {
        uint len = depTokens.length;

        uint[] memory results = new uint[](len);
        for (uint i = 0; i < len; i++) {
            DepToken depToken = DepToken(depTokens[i]);

            results[i] = uint(addToMarketInternal(depToken, msg.sender));
        }

        return results;
    }

    /**
     * @notice Add the market to the borrower's "assets in" for liquidity calculations
     * @param depToken The market to enter
     * @param borrower The address of the account to modify
     * @return Success indicator for whether the market was entered
     */
    function addToMarketInternal(DepToken depToken, address borrower) internal returns (Error) {
        Market storage marketToJoin = markets[address(depToken)];

        if (!marketToJoin.isListed) {
            // market is not listed, cannot join
            return Error.MARKET_NOT_LISTED;
        }

        if (marketToJoin.accountMembership[borrower] == true) {
            // already joined
            return Error.NO_ERROR;
        }

        // NOTE: we store these somewhat redundantly as a significant optimization
        //  this avoids having to iterate through the list for the most common use cases
        //  that is, only when we need to perform liquidity checks
        //  and not whenever we want to check if an account is in a particular market
        marketToJoin.accountMembership[borrower] = true;
        accountAssets[borrower].push(depToken);

        emit MarketEntered(depToken, borrower);

        return Error.NO_ERROR;
    }

    /**
     * @notice Removes asset from sender's account liquidity calculation
     * @dev Sender must not have an outstanding borrow balance in the asset,
     *  or be providing necessary collateral for an outstanding borrow.
     * @param depTokenAddress The address of the asset to be removed
     * @return Whether or not the account successfully exited the market
     */
    function exitMarket(address depTokenAddress) override external returns (uint) {
        DepToken depToken = DepToken(depTokenAddress);
        /* Get sender tokensHeld and amountOwed underlying from the depToken */
        (uint oErr, uint tokensHeld, uint amountOwed, ) = depToken.getAccountSnapshot(msg.sender);
        require(oErr == 0, "exitMarket: getAccountSnapshot failed"); // semi-opaque error code

        /* Fail if the sender has a borrow balance */
        if (amountOwed != 0) {
            return fail(Error.NONZERO_BORROW_BALANCE, FailureInfo.EXIT_MARKET_BALANCE_OWED);
        }

        /* Fail if the sender is not permitted to redeem all of their tokens */
        uint allowed = redeemAllowedInternal(depTokenAddress, msg.sender, tokensHeld);
        if (allowed != 0) {
            return failOpaque(Error.REJECTION, FailureInfo.EXIT_MARKET_REJECTION, allowed);
        }

        Market storage marketToExit = markets[address(depToken)];

        /* Return true if the sender is not already ‘in’ the market */
        if (!marketToExit.accountMembership[msg.sender]) {
            return uint(Error.NO_ERROR);
        }

        /* Set depToken account membership to false */
        delete marketToExit.accountMembership[msg.sender];

        /* Delete depToken from the account’s list of assets */
        // load into memory for faster iteration
        DepToken[] memory userAssetList = accountAssets[msg.sender];
        uint len = userAssetList.length;
        uint assetIndex = len;
        for (uint i = 0; i < len; i++) {
            if (userAssetList[i] == depToken) {
                assetIndex = i;
                break;
            }
        }

        // We *must* have found the asset in the list or our redundant data structure is broken
        assert(assetIndex < len);

        // copy last item in list to location of item to be removed, reduce length by 1
        DepToken[] storage storedList = accountAssets[msg.sender];
        storedList[assetIndex] = storedList[storedList.length - 1];
        storedList.pop();

        emit MarketExited(depToken, msg.sender);

        return uint(Error.NO_ERROR);
    }

    /*** Policy Hooks ***/

    /**
     * @notice Checks if the account should be allowed to mint tokens in the given market
     * @param depToken The market to verify the mint against
     * @param minter The account which would get the minted tokens
     * @param mintAmount The amount of underlying being supplied to the market in exchange for tokens
     * @return 0 if the mint is allowed, otherwise a semi-opaque error code (See ErrorReporter.sol)
     */
    function mintAllowed(address depToken, address minter, uint mintAmount) override external returns (uint) {

        if (!markets[depToken].isListed) {
            return uint(Error.MARKET_NOT_LISTED);
        }

        // core updates
        updateCompSupplyIndex(depToken);
        distributeSupplierComp(depToken, minter);

        return uint(Error.NO_ERROR);
    }

    /**
     * @notice Checks if the account should be allowed to redeem tokens in the given market
     * @param depToken The market to verify the redeem against
     * @param redeemer The account which would redeem the tokens
     * @param redeemTokens The number of depTokens to exchange for the underlying asset in the market
     * @return 0 if the redeem is allowed, otherwise a semi-opaque error code (See ErrorReporter.sol)
     */
    function redeemAllowed(address depToken, address redeemer, uint redeemTokens) override external returns (uint) {
        uint allowed = redeemAllowedInternal(depToken, redeemer, redeemTokens);
        if (allowed != uint(Error.NO_ERROR)) {
            return allowed;
        }

        // core updates
        updateCompSupplyIndex(depToken);
        distributeSupplierComp(depToken, redeemer);

        return uint(Error.NO_ERROR);
    }

    function redeemAllowedInternal(address depToken, address redeemer, uint redeemTokens) internal view returns (uint) {
        if (!markets[depToken].isListed) {
            return uint(Error.MARKET_NOT_LISTED);
        }

        /* If the redeemer is not 'in' the market, then we can bypass the liquidity check */
        if (!markets[depToken].accountMembership[redeemer]) {
            return uint(Error.NO_ERROR);
        }

        /* Otherwise, check if we have sufficient USDT, if not we trigger forceRepay */
        (Error err, , uint shortfall) = getHypotheticalAccountLiquidityInternal(redeemer, DepToken(depToken), redeemTokens, 0);
        if (err != Error.NO_ERROR) {
            return uint(err);
        }
        if (shortfall > 0) {
            return uint(Error.INSUFFICIENT_LIQUIDITY);
        }

        return uint(Error.NO_ERROR);
    }

    /**
     * @notice Validates redeem and reverts on rejection. May emit logs.
     * @param depToken Asset being redeemed
     * @param redeemer The address redeeming the tokens
     * @param redeemAmount The amount of the underlying asset being redeemed
     * @param redeemTokens The number of tokens being redeemed
     */
    function redeemVerify(address depToken, address redeemer, uint redeemAmount, uint redeemTokens) external {
        // Require tokens is zero or amount is also zero
        if (redeemTokens == 0 && redeemAmount > 0) {
            revert("redeemTokens zero");
        }
    }

    /**
     * @notice Checks if the account should be allowed to borrow the underlying asset of the given market
     * @param depToken The market to verify the borrow against
     * @param borrower The account which would borrow the asset
     * @param borrowAmount The amount of underlying the account would borrow
     * @return 0 if the borrow is allowed, otherwise a semi-opaque error code (See ErrorReporter.sol)
     */
    function borrowAllowed(address depToken, address borrower, uint borrowAmount) override external returns (uint) {
        if (!markets[depToken].isListed) {
            return uint(Error.MARKET_NOT_LISTED);
        }

        if (!markets[depToken].accountMembership[borrower]) {
            // only depTokens may call borrowAllowed if borrower not in market
            require(msg.sender == depToken, "sender must be depToken");

            // attempt to add borrower to the market
            Error err1 = addToMarketInternal(DepToken(msg.sender), borrower);
            if (err1 != Error.NO_ERROR) {
                return uint(err1);
            }

            // it should be impossible to break the important invariant
            assert(markets[depToken].accountMembership[borrower]);
        }

        if (oracle.getUnderlyingPrice(DepToken(depToken)) == 0) {
            return uint(Error.PRICE_ERROR);
        }


        uint borrowCap = borrowCaps[depToken];
        // Borrow cap of 0 corresponds to unlimited borrowing
        if (borrowCap != 0) {
            uint totalBorrows = DepToken(depToken).totalBorrows();
            uint nextTotalBorrows = add_(totalBorrows, borrowAmount);
            require(nextTotalBorrows < borrowCap, "market borrow cap reached");
        }

        (Error err2, , uint shortfall) = getHypotheticalAccountLiquidityInternal(borrower, DepToken(depToken), 0, borrowAmount);
        if (err2 != Error.NO_ERROR) {
            return uint(err2);
        }
        if (shortfall > 0) {
            return uint(Error.INSUFFICIENT_LIQUIDITY);
        }

        // core updates
        Exp memory borrowIndex = Exp({mantissa: DepToken(depToken).borrowIndex()});
        updateCompBorrowIndex(depToken, borrowIndex);
        distributeBorrowerComp(depToken, borrower, borrowIndex);

        return uint(Error.NO_ERROR);
    }

    /**
     * @notice Checks if the account should be allowed to repay a borrow in the given market
     * @param depToken The market to verify the repay against
     * @param payer The account which would repay the asset
     * @param borrower The account which would borrowed the asset
     * @param repayAmount The amount of the underlying asset the account would repay
     * @return 0 if the repay is allowed, otherwise a semi-opaque error code (See ErrorReporter.sol)
     */
    function repayBorrowAllowed(
        address depToken,
        address payer,
        address borrower,
        uint repayAmount) override external returns (uint) {

        if (!markets[depToken].isListed) {
            return uint(Error.MARKET_NOT_LISTED);
        }

        // core updates
        Exp memory borrowIndex = Exp({mantissa: DepToken(depToken).borrowIndex()});
        updateCompBorrowIndex(depToken, borrowIndex);
        distributeBorrowerComp(depToken, borrower, borrowIndex);

        return uint(Error.NO_ERROR);
    }

    /**
     * @notice Checks if the account should be allowed to transfer tokens in the given market
     * @param depToken The market to verify the transfer against
     * @param src The account which sources the tokens
     * @param dst The account which receives the tokens
     * @param transferTokens The number of depTokens to transfer
     * @return 0 if the transfer is allowed, otherwise a semi-opaque error code (See ErrorReporter.sol)
     */
    function transferAllowed(address depToken, address src, address dst, uint transferTokens) override external returns (uint) {
        // Currently the only consideration is whether or not
        //  the src is allowed to redeem this many tokens
        uint allowed = redeemAllowedInternal(depToken, src, transferTokens);
        if (allowed != uint(Error.NO_ERROR)) {
            return allowed;
        }

        // core updates
        updateCompSupplyIndex(depToken);
        distributeSupplierComp(depToken, src);
        distributeSupplierComp(depToken, dst);

        return uint(Error.NO_ERROR);
    }

