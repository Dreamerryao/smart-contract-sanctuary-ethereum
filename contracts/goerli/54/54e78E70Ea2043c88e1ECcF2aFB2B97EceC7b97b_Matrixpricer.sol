    /*** Admin Functions ***/

    /**
      * @notice Sets a new price oracle for the matrixpricer
      * @dev Admin function to set a new price oracle
      * @return uint 0=success, otherwise a failure (see ErrorReporter.sol for details)
      */
    function _setPriceOracle(PriceOracle newOracle) public returns (uint) {
        // Check caller is admin
        if (msg.sender != admin) {
            return fail(Error.UNAUTHORIZED, FailureInfo.SET_PRICE_ORACLE_OWNER_CHECK);
        }

        // Track the old oracle for the matrixpricer
        PriceOracle oldOracle = oracle;

        // Set matrixpricer oracle to newOracle
        oracle = newOracle;

        // Emit NewPriceOracle(oldOracle, newOracle)
        emit NewPriceOracle(oldOracle, newOracle);

        return uint(Error.NO_ERROR);
    }

    /**
      * @notice Add the market to the markets mapping and set it as listed
      * @dev Admin function to set isListed and add support for the market
      * @param depToken The address of the market (token) to list
      * @return uint 0=success, otherwise a failure. (See enum Error for details)
      */
    function _supportMarket(DepToken depToken) external returns (uint) {
        if (msg.sender != admin) {
            return fail(Error.UNAUTHORIZED, FailureInfo.SUPPORT_MARKET_OWNER_CHECK);
        }

        if (markets[address(depToken)].isListed) {
            return fail(Error.MARKET_ALREADY_LISTED, FailureInfo.SUPPORT_MARKET_EXISTS);
        }

        depToken.isDepToken(); // Sanity check to make sure its really a DepToken

        // Note that isComped is not in active use anymore
        Market storage newMarket = markets[address(depToken)];
        newMarket.isListed = true;
        newMarket.isComped = false;
        newMarket.collateralFactorMantissa = 0;

        _addMarketInternal(address(depToken));
        _initializeMarket(address(depToken));

        emit MarketListed(depToken);

        return uint(Error.NO_ERROR);
    }

    function _addMarketInternal(address depToken) internal {
        for (uint i = 0; i < allMarkets.length; i ++) {
            require(allMarkets[i] != DepToken(depToken), "market already added");
        }
        allMarkets.push(DepToken(depToken));
    }

    function _initializeMarket(address depToken) internal {
        uint32 blockNumber = safe32(getBlockNumber(), "block number exceeds 32 bits");

        CompMarketState storage supplyState = compSupplyState[depToken];
        CompMarketState storage borrowState = compBorrowState[depToken];

        /*
         * Update market state indices
         */
        if (supplyState.index == 0) {
            // Initialize supply state index with default value
            supplyState.index = compInitialIndex;
        }

        if (borrowState.index == 0) {
            // Initialize borrow state index with default value
            borrowState.index = compInitialIndex;
        }

        /*
         * Update market state block numbers
         */
         supplyState.block = borrowState.block = blockNumber;
    }

    /**
     * @notice Checks caller is admin, or this contract is becoming the new implementation
     */
    function adminOrInitializing() internal view returns (bool) {
        return msg.sender == admin || msg.sender == matrixpricerImplementation;
    }

    /*** Depeg Distribution ***/

    /**
     * @notice Set DEPEG speed for a single market
     * @param depToken The market whose DEPEG speed to update
     * @param supplySpeed New supply-side DEPEG speed for market
     * @param borrowSpeed New borrow-side DEPEG speed for market
     */
    function setCompSpeedInternal(DepToken depToken, uint supplySpeed, uint borrowSpeed) internal {
        Market storage market = markets[address(depToken)];
        require(market.isListed, "depeg market is not listed");

        if (compSupplySpeeds[address(depToken)] != supplySpeed) {
            // Supply speed updated so let's update supply state to ensure that
            //  1. DEPEG accrued properly for the old speed, and
            //  2. DEPEG accrued at the new speed starts after this block.
            updateCompSupplyIndex(address(depToken));

            // Update speed and emit event
            compSupplySpeeds[address(depToken)] = supplySpeed;
            emit CompSupplySpeedUpdated(depToken, supplySpeed);
        }

        if (compBorrowSpeeds[address(depToken)] != borrowSpeed) {
            // Borrow speed updated so let's update borrow state to ensure that
            //  1. DEPEG accrued properly for the old speed, and
            //  2. DEPEG accrued at the new speed starts after this block.
            Exp memory borrowIndex = Exp({mantissa: depToken.borrowIndex()});
            updateCompBorrowIndex(address(depToken), borrowIndex);

            // Update speed and emit event
            compBorrowSpeeds[address(depToken)] = borrowSpeed;
            emit CompBorrowSpeedUpdated(depToken, borrowSpeed);
        }
    }

    /**
     * @notice Accrue DEPEG to the market by updating the supply index
     * @param depToken The market whose supply index to update
     * @dev Index is a cumulative sum of the DEPEG per depToken accrued.
     */
    function updateCompSupplyIndex(address depToken) internal {
        CompMarketState storage supplyState = compSupplyState[depToken];
        uint supplySpeed = compSupplySpeeds[depToken];
        uint32 blockNumber = safe32(getBlockNumber(), "block number exceeds 32 bits");
        uint deltaBlocks = sub_(uint(blockNumber), uint(supplyState.block));
        if (deltaBlocks > 0 && supplySpeed > 0) {
            uint supplyTokens = DepToken(depToken).totalSupply();
            uint compAccrued = mul_(deltaBlocks, supplySpeed);
            Double memory ratio = supplyTokens > 0 ? fraction(compAccrued, supplyTokens) : Double({mantissa: 0});
            supplyState.index = safe224(add_(Double({mantissa: supplyState.index}), ratio).mantissa, "new index exceeds 224 bits");
            supplyState.block = blockNumber;
        } else if (deltaBlocks > 0) {
            supplyState.block = blockNumber;
        }
    }

    /**
     * @notice Accrue DEPEG to the market by updating the borrow index
     * @param depToken The market whose borrow index to update
     * @dev Index is a cumulative sum of the DEPEG per depToken accrued.
     */
    function updateCompBorrowIndex(address depToken, Exp memory marketBorrowIndex) internal {
        CompMarketState storage borrowState = compBorrowState[depToken];
        uint borrowSpeed = compBorrowSpeeds[depToken];
        uint32 blockNumber = safe32(getBlockNumber(), "block number exceeds 32 bits");
        uint deltaBlocks = sub_(uint(blockNumber), uint(borrowState.block));
        if (deltaBlocks > 0 && borrowSpeed > 0) {
            uint borrowAmount = div_(DepToken(depToken).totalBorrows(), marketBorrowIndex);
            uint compAccrued = mul_(deltaBlocks, borrowSpeed);
            Double memory ratio = borrowAmount > 0 ? fraction(compAccrued, borrowAmount) : Double({mantissa: 0});
            borrowState.index = safe224(add_(Double({mantissa: borrowState.index}), ratio).mantissa, "new index exceeds 224 bits");
            borrowState.block = blockNumber;
        } else if (deltaBlocks > 0) {
            borrowState.block = blockNumber;
        }
    }

    /**
     * @notice Calculate DEPEG accrued by a supplier and possibly transfer it to them
     * @param depToken The market in which the supplier is interacting
     * @param supplier The address of the supplier to distribute DEPEG to
     */
    function distributeSupplierComp(address depToken, address supplier) internal {
        // TODO: Don't distribute supplier COMP if the user is not in the supplier market.
        // This check should be as gas efficient as possible as distributeSupplierComp is called in many places.
        // - We really don't want to call an external contract as that's quite expensive.

        CompMarketState storage supplyState = compSupplyState[depToken];
        uint supplyIndex = supplyState.index;
        uint supplierIndex = compSupplierIndex[depToken][supplier];

        // Update supplier's index to the current index since we are distributing accrued DEPEG
        compSupplierIndex[depToken][supplier] = supplyIndex;

        if (supplierIndex == 0 && supplyIndex >= compInitialIndex) {
            // Covers the case where users supplied tokens before the market's supply state index was set.
            // Rewards the user with DEPEG accrued from the start of when supplier rewards were first
            // set for the market.
            supplierIndex = compInitialIndex;
        }

        // Calculate change in the cumulative sum of the DEPEG per depToken accrued
        Double memory deltaIndex = Double({mantissa: sub_(supplyIndex, supplierIndex)});

        uint supplierTokens = DepToken(depToken).balanceOf(supplier);

        // Calculate DEPEG accrued: depTokenAmount * accruedPerDepToken
        uint supplierDelta = mul_(supplierTokens, deltaIndex);

        uint supplierAccrued = add_(compAccrued[supplier], supplierDelta);
        compAccrued[supplier] = supplierAccrued;

        emit DistributedSupplierComp(DepToken(depToken), supplier, supplierDelta, supplyIndex);
    }

    /**
     * @notice Calculate DEPEG accrued by a borrower and possibly transfer it to them
     * @dev Borrowers will not begin to accrue until after the first interaction with the protocol.
     * @param depToken The market in which the borrower is interacting
     * @param borrower The address of the borrower to distribute DEPEG to
     */
    function distributeBorrowerComp(address depToken, address borrower, Exp memory marketBorrowIndex) internal {
        // TODO: Don't distribute supplier DEPEG if the user is not in the borrower market.
        // This check should be as gas efficient as possible as distributeBorrowerComp is called in many places.
        // - We really don't want to call an external contract as that's quite expensive.

        CompMarketState storage borrowState = compBorrowState[depToken];
        uint borrowIndex = borrowState.index;
        uint borrowerIndex = compBorrowerIndex[depToken][borrower];

        // Update borrowers' index to the current index since we are distributing accrued DEPEG
        compBorrowerIndex[depToken][borrower] = borrowIndex;

        if (borrowerIndex == 0 && borrowIndex >= compInitialIndex) {
            // Covers the case where users borrowed tokens before the market's borrow state index was set.
            // Rewards the user with DEPEG accrued from the start of when borrower rewards were first
            // set for the market.
            borrowerIndex = compInitialIndex;
        }

        // Calculate change in the cumulative sum of the DEPEG per borrowed unit accrued
        Double memory deltaIndex = Double({mantissa: sub_(borrowIndex, borrowerIndex)});

        uint borrowerAmount = div_(DepToken(depToken).borrowBalanceStored(borrower), marketBorrowIndex);

        // Calculate DEPEG accrued: depTokenAmount * accruedPerBorrowedUnit
        uint borrowerDelta = mul_(borrowerAmount, deltaIndex);

        uint borrowerAccrued = add_(compAccrued[borrower], borrowerDelta);
        compAccrued[borrower] = borrowerAccrued;

        emit DistributedBorrowerComp(DepToken(depToken), borrower, borrowerDelta, borrowIndex);
    }

    /**
     * @notice Claim all the DEPEG accrued by holder in all markets
     * @param holder The address to claim DEPEG for
     */
    function claimDepeg(address holder) public {
        return claimDepeg(holder, allMarkets);
    }

    /**
     * @notice Claim all the DEPEG accrued by holder in the specified markets
     * @param holder The address to claim DEPEG for
     * @param depTokens The list of markets to claim DEPEG in
     */
    function claimDepeg(address holder, DepToken[] memory depTokens) public {
        address[] memory holders = new address[](1);
        holders[0] = holder;
        claimDepeg(holders, depTokens, true, true);
    }

    /**
     * @notice Claim all DEPEG accrued by the holders
     * @param holders The addresses to claim DEPEG for
     * @param depTokens The list of markets to claim DEPEG in
     * @param borrowers Whether or not to claim DEPEG earned by borrowing
     * @param suppliers Whether or not to claim DEPEG earned by supplying
     */
    function claimDepeg(address[] memory holders, DepToken[] memory depTokens, bool borrowers, bool suppliers) public {
        for (uint i = 0; i < depTokens.length; i++) {
            DepToken depToken = depTokens[i];
            require(markets[address(depToken)].isListed, "market must be listed");
            if (borrowers == true) {
                Exp memory borrowIndex = Exp({mantissa: depToken.borrowIndex()});
                updateCompBorrowIndex(address(depToken), borrowIndex);
                for (uint j = 0; j < holders.length; j++) {
                    distributeBorrowerComp(address(depToken), holders[j], borrowIndex);
                }
            }
            if (suppliers == true) {
                updateCompSupplyIndex(address(depToken));
                for (uint j = 0; j < holders.length; j++) {
                    distributeSupplierComp(address(depToken), holders[j]);
                }
            }
        }
        for (uint j = 0; j < holders.length; j++) {
            compAccrued[holders[j]] = grantDepegInternal(holders[j], compAccrued[holders[j]]);
        }
    }

    /**
     * @notice Transfer DEPEG to the user
     * @dev Note: If there is not enough DEPEG, we do not perform the transfer all.
     * @param user The address of the user to transfer DEPEG to
     * @param amount The amount of DEPEG to (possibly) transfer
     * @return The amount of DEPEG which was NOT transferred to the user
     */
    function grantDepegInternal(address user, uint amount) internal returns (uint) {
        Depeg depeg = Depeg(getDepegAddress());
        uint depegRemaining = depeg.balanceOf(address(this));
        if (amount > 0 && amount <= depegRemaining) {
            depeg.transfer(user, amount);
            return 0;
        }
        return amount;
    }

    /*** Comp Distribution Admin ***/

    /**
     * @notice Transfer DEPEG to the recipient
     * @dev Note: If there is not enough DEPEG, we do not perform the transfer all.
     * @param recipient The address of the recipient to transfer DEPEG to
     * @param amount The amount of DEPEG to (possibly) transfer
     */
    function _grantDepeg(address recipient, uint amount) public {
        require(adminOrInitializing(), "only admin can grant comp");
        uint amountLeft = grantDepegInternal(recipient, amount);
        require(amountLeft == 0, "insufficient depeg for grant");
        emit CompGranted(recipient, amount);
    }

    /**
     * @notice Set DEPEG borrow and supply speeds for the specified markets.
     * @param depTokens The markets whose DEPEG speed to update.
     * @param supplySpeeds New supply-side DEPEG speed for the corresponding market.
     * @param borrowSpeeds New borrow-side DEPEG speed for the corresponding market.
     */
    function _setCompSpeeds(DepToken[] memory depTokens, uint[] memory supplySpeeds, uint[] memory borrowSpeeds) public {
        require(adminOrInitializing(), "only admin can set depeg speed");

        uint numTokens = depTokens.length;
        require(numTokens == supplySpeeds.length && numTokens == borrowSpeeds.length, "Matrixpricer::_setDepegSpeeds invalid input");

        for (uint i = 0; i < numTokens; ++i) {
            setCompSpeedInternal(depTokens[i], supplySpeeds[i], borrowSpeeds[i]);
        }
    }

    /**
     * @notice Return all of the markets
     * @dev The automatic getter may be used to access an individual market.
     * @return The list of market addresses
     */
    function getAllMarkets() public view returns (DepToken[] memory) {
        return allMarkets;
    }

    function getBlockNumber() virtual public view returns (uint) {
        return block.number;
    }

    /**
     * @notice Return the address of the DEPEG token
     * @return The address of DEPEG
     */
    function getDepegAddress() virtual public view returns (address) {
        return 0xb15ABb033be13EC86ce65bBD7D1E37aFf673df22;
    }
}

