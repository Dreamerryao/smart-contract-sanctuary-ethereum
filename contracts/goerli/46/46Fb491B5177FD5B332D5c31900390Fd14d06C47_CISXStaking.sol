import { Ownable2Step } from "@openzeppelin/contracts/access/Ownable2Step.sol";
import { IERC20 } from "@openzeppelin/contracts/token/ERC20/IERC20.sol";

contract CISXStaking is Ownable2Step {
  struct StakeItem {
    bool unstaked;
    uint32 start;
    uint256 amount;
  }

  address public carbonToken = 0x141E855b7Bf6F2135420cc77b2a745825Bc63Df6; // TODO: change to mainnet address

  // top stakes
  uint256 public totalStaked;
  mapping(address => StakeItem[]) public stakes;

  event Staked(address indexed user, uint256 amount);
  event Unstaked(address indexed user, uint8 apy, uint256 amount);

  function getTotalStakedByAccount(address _account) external view returns (uint256) {
    uint256 total = 0;
    for (uint256 i = 0; i < stakes[_account].length; i++) {
      if (!stakes[_account][i].unstaked) {
        total += stakes[_account][i].amount;
      }
    }
    return total;
  }

  function stake(uint256 _amount) external {
    require(_amount >= 100_000 * 10**18, "Minimum stake is 100,000 CSIX");
    uint256 maxRewards = (_amount * 15) / 100;
    require(IERC20(carbonToken).balanceOf(address(this)) >= totalStaked + maxRewards, "Not enough rewards");

    IERC20(carbonToken).transferFrom(msg.sender, address(this), _amount);
    totalStaked += _amount;
    stakes[msg.sender].push(StakeItem({ unstaked: false, start: uint32(block.timestamp), amount: _amount }));

    emit Staked(msg.sender, _amount);
  }

  function unstake(uint256 _idx, uint8 _lockType) external {
    StakeItem storage item = stakes[msg.sender][_idx];
    require(!item.unstaked, "Already unstaked");
    require(_lockType < 3, "Invalid lock type");

    uint256[3] memory lockDuration = [60 days, 90 days, uint256(180 days)];
    uint8[3] memory apys = [5, 12, 15];
    require(block.timestamp - item.start >= lockDuration[_lockType], "Lock period not passed");

    uint256 total = ((item.amount * apys[_lockType]) / 100) + item.amount; // rewards + amount

    totalStaked -= item.amount;
    IERC20(carbonToken).transfer(msg.sender, total);
    item.unstaked = true;

    emit Unstaked(msg.sender, apys[_lockType], item.amount);
  }

  function withdraw() public onlyOwner {
    uint256 balance = IERC20(carbonToken).balanceOf(address(this));
    require(balance > totalStaked + (totalStaked * 15) / 100, "No availble");
    uint256 available = balance - totalStaked - (totalStaked * 15) / 100;
    IERC20(carbonToken).transfer(msg.sender, available);
  }
}