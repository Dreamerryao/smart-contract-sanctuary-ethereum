pragma solidity ^0.8.10;

import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";

contract TokenVesting is OwnableUpgradeable, AccessControlUpgradeable, ReentrancyGuardUpgradeable {
    using SafeERC20 for IERC20;

    bytes32 public constant ADMIN_ROLE = keccak256("ADMIN_ROLE");

    mapping(string => Vesting) vestingStructs;
    string[] vestingIds;

    //vesting id => address => total locked token amount
    mapping(string => mapping(address => uint256)) totalLockedAmounts;
    mapping(string => uint256) totalLockedPerSale;

    //vesting id => address => claimed token amount
    mapping(string => mapping(address => uint256)) claimedAmounts;

    struct Vesting {
        IERC20 token;
        uint256 startTime;
        uint256 duration;
        uint256 endTime;
        uint256 cliffDuration;
        uint256 cliffEndTime;
        uint256 initialClaim;
        uint256 claimInterval;
        uint256 saleTokenPrice;
    }

    event TokensLocked(address indexed beneficiary, string vestingId, uint tokenAmount);
    event TokensClaimed(address indexed beneficiary, string vestingId, uint tokenAmount);

    function initialize()
    external
    initializer {
        __Ownable_init();
        __AccessControl_init();
        __ReentrancyGuard_init();
        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
        _setupRole(ADMIN_ROLE, _msgSender());
    }

    function createVesting(
        string memory id, //unique vesting id
        address token, //address of the vested token
        uint256 startTime, //start time of the vesting
        uint256 duration, //vesting duration in seconds
        uint256 cliffDuration, //cliff duration in seconds
        uint256 initialClaim, //% of tokens which can be claimed from the vesting start time. 1000 = 100%
        uint256 claimInterval, //how frequently the funds can be claimed in seconds
        uint256 saleTokenPrice //amount of payment tokens for 1 sale token
    )
    external
    onlyRole(ADMIN_ROLE)
    {
        require(token != address(0));
        require(vestingStructs[id].startTime == 0, "Vesting schedule already exist");
        require(startTime > block.timestamp, "Vesting must start in the future");
        require(initialClaim < 10000, "Must be lower than 100%");
        require(claimInterval >= 1, "claim interval must be >= 1");

        uint256 cliffEndTime = startTime + cliffDuration;
        uint256 endTime = startTime + duration;
        require(cliffEndTime < endTime, "Cliff time should end before the vesting end time");

        Vesting memory vesting = Vesting(
            IERC20(token),
            startTime,
            duration,
            endTime,
            cliffDuration,
            cliffEndTime,
            initialClaim,
            claimInterval,
            saleTokenPrice
        );
        vestingStructs[id] = vesting;
        vestingIds.push(id);
    }

    function depositSaleTokens(string memory vestingId)
    external
    {
        require(vestingStructs[vestingId].token.balanceOf(address(this)) == 0, "Already deposited");
        vestingStructs[vestingId].token.safeTransferFrom(msg.sender, address(this), totalLockedPerSale[vestingId]);
    }

    function getVestingById(string memory id)
    external
    view
    returns (Vesting memory){
        return vestingStructs[id];
    }

    function getVestingIds()
    external
    view
    returns (string[] memory) {
        return vestingIds;
    }

    function lockTokens(
        string memory vestingId,
        address beneficiary,
        uint256 amount
    )
    external
    {
        require(beneficiary != address(0), "Can not set beneficiary as empty address");
        require(vestingStructs[vestingId].startTime > 0, "Vesting does not exist");
        require(block.timestamp < vestingStructs[vestingId].startTime, "Can not vest after the start time");
        IERC20 token = vestingStructs[vestingId].token;
        require(amount <= token.balanceOf(msg.sender), "Insufficient balance");
        totalLockedAmounts[vestingId][beneficiary] += amount;
        totalLockedPerSale[vestingId] += amount;
        token.safeTransferFrom(msg.sender, address(this), amount);
        emit TokensLocked(beneficiary, vestingId, amount);
    }

    function getClaimableAmount(string memory vestingId, address beneficiary)
    public
    view
    returns (uint256){
        require(vestingStructs[vestingId].startTime > 0, "Vesting does not exist");
        Vesting memory vesting = vestingStructs[vestingId];
        uint256 currentTime = block.timestamp;

        if (currentTime < vesting.startTime) {
            return 0;
        } else if (currentTime < vesting.cliffEndTime) {

            if (claimedAmounts[vestingId][beneficiary] != 0) {
                return 0;
            }

            return totalLockedAmounts[vestingId][beneficiary] * vesting.initialClaim / 10000;
        } else if (currentTime > vesting.endTime) {
            return totalLockedAmounts[vestingId][beneficiary] - claimedAmounts[vestingId][beneficiary];
        } else {
            uint256 timeFromStart = currentTime - vesting.startTime;
            uint256 claimIntervals = timeFromStart / vesting.claimInterval;
            uint256 claimableSeconds = claimIntervals * vesting.claimInterval;
            uint256 claimableAmount = (totalLockedAmounts[vestingId][beneficiary] * claimableSeconds) / vesting.duration;
            if (claimableAmount <= claimedAmounts[vestingId][beneficiary])
                return 0;

            return claimableAmount - claimedAmounts[vestingId][beneficiary];
        }
    }

    function claimTokens(
        string memory vestingId
    )
    external
    nonReentrant
    {
        require(vestingStructs[vestingId].startTime > 0, "Vesting does not exist");
        require(totalLockedAmounts[vestingId][msg.sender] > 0, "No tokens to be claimed");

        uint256 claimableAmount = getClaimableAmount(vestingId, msg.sender);
        require(claimableAmount > 0, "No claimable tokens");

        claimedAmounts[vestingId][msg.sender] += claimableAmount;
        vestingStructs[vestingId].token.safeTransfer(msg.sender, claimableAmount);
        emit TokensClaimed(msg.sender, vestingId, claimableAmount);
    }

    function getLockedAmount(string memory vestingId, address beneficiary)
    public
    view
    returns (uint256){
        return totalLockedAmounts[vestingId][beneficiary] - claimedAmounts[vestingId][beneficiary] - getClaimableAmount(vestingId, beneficiary);
    }

    function getTotalLockedAmount(string memory vestingId, address beneficiary)
    public
    view
    returns (uint256){
        return totalLockedAmounts[vestingId][beneficiary];
    }

    function getClaimedAmount(string memory vestingId, address beneficiary)
    public
    view
    returns (uint256){
        return claimedAmounts[vestingId][beneficiary];
    }

    function getStats(string memory vestingId, address beneficiary)
    external
    view
    returns (uint256, uint256, uint256, uint256){
        return (
        getTotalLockedAmount(vestingId, beneficiary),
        getClaimedAmount(vestingId, beneficiary),
        getClaimableAmount(vestingId, beneficiary),
        getLockedAmount(vestingId, beneficiary)
        );
    }

}

