pragma solidity ^0.8.10;

import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "./TokenVesting.sol";

// Sale with max 3 rounds:
// 1 round, 1 address group, is fixed token allocation - the approved buyer must buy the exact amount of tokens per individual token allocation
// 2 rounds, 1 address group, is NOT fixed token allocation - #1 round up to individual allocation. #2 up to total group allocation
// 3 rounds, at least 2 address groups, is NOT fixed token allocation  - #1 round up to individual allocation. #2 up to total group allocation. #3 round any amount of remaining tokens for sale
contract Sale is Initializable, AccessControl {
    using SafeERC20 for IERC20;

    bytes32 public constant ADMIN_ROLE = keccak256("ADMIN_ROLE");
    string id;

    struct RoundConfig {
        uint256 startTime;
        uint256 endTime;
    }

    RoundConfig[] saleRounds;
    mapping(address => uint256) addressAllocations;
    mapping(address => uint256) groupMembership;
    uint256[] addressGroupAllocations;
    mapping(uint256 => uint256) tokensClaimedByGroup;
    mapping(address => uint256) tokensClaimed;
    mapping(address => uint256) tokensContributed;
    uint256 totalSaleTokens;
    uint256 saleTokensSold;
    uint256 paymentTokensContributed;
    uint256 rounds;
    address beneficiary;
    address feeRecipient;
    address admin;
    IERC20 paymentToken;
    IERC20 saleToken;
    address vestingContract;
    string vestingId;
    uint saleStartTime;
    bool fixedTokenAmountSale;
    uint fee;
    address[] approvedAddresses;

    event TokensBought(address addr, uint saleTokenAmount, uint paymentTokenAmount, uint roundId);

    function initialize(
        string memory _id, //unique id of the sale
        uint256 totalPaymentTokens,
        address[] memory configAddresses, //list of configuration addresses: payment token, vesting contract, sale beneficiary, fee recipient, admin
        uint _fee,
        bool _isFixedTokenAmountSale, //if set to true a user must buy the exact amount of tokens allocated
        uint _saleStartTime, //sale start time
        address[] memory _approvedAddress, //list of approved addresses which can participate in the sale
        uint256[] memory _addressGroupEndIndexes, //end indexes of address groups
        uint256[] memory _tokenAllocationPerAddress, //tokens allocated per allowed address
        uint256[] memory _roundEndTimes //timestamps of the round end times
    )
    external
    initializer
    {
        require(configAddresses[0] != address(0));
        require(configAddresses[1] != address(0));
        require(configAddresses[2] != address(0));
        require(configAddresses[3] != address(0));
        require(configAddresses[4] != address(0));

        id = _id;
        paymentToken = IERC20(configAddresses[0]);
        vestingContract = configAddresses[1];
        beneficiary = configAddresses[2];
        feeRecipient = configAddresses[3];
        admin = configAddresses[4];
        fixedTokenAmountSale = _isFixedTokenAmountSale;
        saleStartTime = _saleStartTime;
        fee = _fee;

        _setupRole(DEFAULT_ADMIN_ROLE, admin);
        _setupRole(ADMIN_ROLE, admin);

        _setRounds(_roundEndTimes, _addressGroupEndIndexes);
        approvedAddresses = _approvedAddress;
        _setMaxTokenAmounts(_approvedAddress, _tokenAllocationPerAddress, _addressGroupEndIndexes);
    }

    function getPaymentTokensContributed()
    external
    view
    returns (uint){
        return paymentTokensContributed;
    }

    function getRounds()
    external
    view
    returns (uint){
        return rounds;
    }

    function getBeneficiary()
    external
    view
    returns (address){
        return address(beneficiary);
    }

    function getAdmin()
    external
    view
    returns (address){
        return address(admin);
    }

    function getPaymentToken()
    external
    view
    returns (address){
        return address(paymentToken);
    }

    function getVestingContract()
    external
    view
    returns (address){
        return vestingContract;
    }

    function getVestingId()
    external
    view
    returns (string memory){
        return vestingId;
    }

    function setVestingId(string memory _vestingId)
    external
    onlyRole(ADMIN_ROLE)
    {
        vestingId = _vestingId;
        for (uint i = 0; i < approvedAddresses.length; i++) {
            uint256 saleTokenAmount = tokensClaimed[approvedAddresses[i]];
            saleToken.safeIncreaseAllowance(vestingContract, saleTokenAmount);
            TokenVesting(vestingContract).lockTokens(vestingId, msg.sender, saleTokenAmount);
        }
    }

    function getSaleStartTime()
    external
    view
    returns (uint){
        return saleStartTime;
    }

    function isFixedTokenAmountSale()
    external
    view
    returns (bool){
        return fixedTokenAmountSale;
    }

    function getFee()
    external
    view
    returns (uint){
        return fee;
    }

    function getIndividualAllocation(address addr)
    external
    view
    returns (uint){
        return addressAllocations[addr];
    }

    function getRoundConfig(uint256 roundIndex)
    external
    view
    returns (RoundConfig memory){
        return saleRounds[roundIndex];
    }

    function getTokensClaimed(address _address)
    external
    view
    returns (uint){
        return tokensClaimed[_address];
    }

    function getTokensContributed(address _address)
    external
    view
    returns (uint){
        return tokensContributed[_address];
    }

    function getApprovedAddresses()
    public
    view
    returns (address []memory){
        return approvedAddresses;
    }

    function getTotalPaymentTokens()
    public
    view
    returns (uint256 roundIndex){
        return _calculatePaymentTokenAmount(totalSaleTokens, 0);
    }

    function _setRounds(
        uint256[] memory roundEndTimes,
        uint256[] memory addressGroupEndIndexes
    ) private {
        if (fixedTokenAmountSale) {
            rounds = 1;
        } else if (roundEndTimes.length == 2 && addressGroupEndIndexes.length == 1) {
            rounds = 2;
        } else if (roundEndTimes.length == 3 && addressGroupEndIndexes.length >= 2) {
            rounds = 3;
        } else {
            revert("Incorrect sale configuration");
        }

        uint currentRoundStartTime = saleStartTime;
        for (uint i = 0; i < roundEndTimes.length; i++) {
            require(roundEndTimes[i] > currentRoundStartTime, "Incorrect round end time");
            RoundConfig memory round = RoundConfig(currentRoundStartTime, roundEndTimes[i]);
            saleRounds.push(round);

            currentRoundStartTime = roundEndTimes[i] + 1;
        }
    }

    function _setMaxTokenAmounts(
        address[] memory approvedAddress,
        uint[] memory tokenAllocationPerAddress,
        uint256[] memory addressGroupEndIndexes
    ) private {
        require(approvedAddress.length == tokenAllocationPerAddress.length, "Incorrect sale configuration");

        uint sum = 0;
        uint groupSum = 0;
        uint groupId = 0;
        for (uint i = 0; i < approvedAddress.length; i++) {

            addressAllocations[approvedAddress[i]] = tokenAllocationPerAddress[i];
            sum += tokenAllocationPerAddress[i];

            groupSum += tokenAllocationPerAddress[i];
            groupMembership[approvedAddress[i]] = groupId;

            if (addressGroupEndIndexes[groupId] == i) {
                addressGroupAllocations.push(groupSum);
                groupSum = 0;
                groupId++;
            }
        }

        totalSaleTokens = sum;
    }

    function withdraw()
    external
    {
        require(msg.sender == feeRecipient || msg.sender == beneficiary, "Only sale admin or beneficiary can initiate the withdraw");
        require(isSaleCompleted(), "Sale has not completed yet");

        uint paymentTokensForAdmin = paymentTokensContributed * fee / 10000;
        paymentToken.safeIncreaseAllowance(address(this), paymentTokensForAdmin);
        paymentToken.safeTransferFrom(address(this), feeRecipient, paymentTokensForAdmin);

        uint paymentTokensForBeneficiary = paymentTokensContributed - paymentTokensForAdmin;
        paymentToken.safeIncreaseAllowance(address(this), paymentTokensForBeneficiary);
        paymentToken.safeTransferFrom(address(this), beneficiary, paymentTokensForBeneficiary);

        uint unsoldTokens = saleToken.balanceOf(address(this));
        saleToken.safeIncreaseAllowance(address(this), unsoldTokens);
        saleToken.safeTransferFrom(address(this), beneficiary, unsoldTokens);
    }

    function buy(
        uint256 maxPaymentTokenAmount,
        uint256 roundIndex
    )
    external
    {
        uint currentRoundIndex = getCurrentRoundIndex();
        require(roundIndex == currentRoundIndex, "Wrong round index");

        if (fixedTokenAmountSale) {
            buyFixedAmount(maxPaymentTokenAmount);
        } else if (currentRoundIndex == 0) {
            buyUpToIndividualAllocation(maxPaymentTokenAmount);
        } else if (currentRoundIndex == 1) {
            buyUpToGroupAllocation(maxPaymentTokenAmount);
        } else if (currentRoundIndex == 2) {
            buyUpToSaleAllocation(maxPaymentTokenAmount);
        }
    }

    function _isInSale()
    private
    view
    returns (bool) {
        uint256 _now = block.timestamp;
        return (_now > saleStartTime && _now < saleRounds[saleRounds.length - 1].endTime);
    }

    function _areAllTokensSold()
    private
    view
    returns (bool) {
        return saleTokensSold == totalSaleTokens;
    }

    function isSaleActive()
    public
    view
    returns (bool) {
        if (_areAllTokensSold()) {
            return false;
        }
        return _isInSale();
    }

    function isSaleCompleted()
    public
    view
    returns (bool) {
        if (_areAllTokensSold()) {
            return true;
        }

        uint256 _now = block.timestamp;
        return _now >= saleRounds[saleRounds.length - 1].endTime;
    }

    function getCurrentRoundIndex()
    public
    view
    returns (uint) {
        require(isSaleActive(), "Sale must be active");

        uint _now = block.timestamp;
        for (uint i = 0; i <= saleRounds.length; i++) {
            if (saleRounds[i].startTime <= _now && _now <= saleRounds[i].endTime) {
                return i;
            }
        }

        return 0;
    }

    function _checkBalanceAndAllowance(
        uint paymentTokenAmount
    )
    internal
    view {
        require(paymentToken.balanceOf(msg.sender) >= paymentTokenAmount, "Insufficient amount of payment tokens");
        require(paymentToken.allowance(msg.sender, address(this)) >= paymentTokenAmount, "Allow this contract to spend payment token");
    }

    function _transferTokens(
        uint paymentTokenAmount,
        uint saleTokenAmount
    )
    internal
    {
        paymentToken.safeTransferFrom(msg.sender, address(this), paymentTokenAmount);

        string memory emptyString = "";
        if (keccak256(bytes(vestingId)) != keccak256(bytes(emptyString))) {
            saleToken.safeIncreaseAllowance(vestingContract, saleTokenAmount);
            TokenVesting(vestingContract).lockTokens(vestingId, msg.sender, saleTokenAmount);
        } else {
            //            saleToken.safeIncreaseAllowance(address(this), saleTokenAmount);
            //            saleToken.safeTransferFrom(address(this), msg.sender, saleTokenAmount);
        }
    }

    function _updateSaleState(
        uint groupId,
        uint saleTokenAmount,
        uint paymentTokenAmount
    )
    internal
    {
        tokensClaimed[msg.sender] += saleTokenAmount;
        tokensContributed[msg.sender] += paymentTokenAmount;
        tokensClaimedByGroup[groupId] += saleTokenAmount;
        saleTokensSold += saleTokenAmount;
        paymentTokensContributed += paymentTokenAmount;
    }

    function _calculatePaymentTokenAmount(
        uint256 saleTokenAmount,
        uint256 roundId
    )
    internal
    view
    returns (uint256)
    {
        return saleTokenAmount;
    }

    function _calculateSaleTokenAmount(
        uint256 maxPaymentTokenAmount,
        uint256 roundId
    )
    internal
    view
    returns (uint256)
    {
        return maxPaymentTokenAmount;
    }

    function buyFixedAmount(
        uint256 maxPaymentTokenAmount
    )
    internal
    {
        uint256 paymentTokenAmount = addressAllocations[msg.sender];
        require(paymentTokenAmount == maxPaymentTokenAmount, "Must send exact amount of tokens");
        uint groupId = groupMembership[msg.sender];
        _checkBalanceAndAllowance(paymentTokenAmount);
        _updateSaleState(groupId, addressAllocations[msg.sender], paymentTokenAmount);
        _transferTokens(paymentTokenAmount, addressAllocations[msg.sender]);

        emit TokensBought(msg.sender, addressAllocations[msg.sender], paymentTokenAmount, 0);
    }

    function buyUpToIndividualAllocation(
        uint256 maxPaymentTokenAmount
    )
    internal
    {
        require(addressAllocations[msg.sender] > 0, "You are not allowed to buy tokens");
        uint groupId = groupMembership[msg.sender];
        uint saleTokenAmount = _calculateSaleTokenAmount(maxPaymentTokenAmount, 0);

        require(saleTokenAmount > 0, "Too few payment tokens to buy sale token");

        if (saleTokenAmount > addressAllocations[msg.sender] - tokensClaimed[msg.sender]) {
            saleTokenAmount = addressAllocations[msg.sender] - tokensClaimed[msg.sender];
        }

        uint paymentTokenAmount = _calculatePaymentTokenAmount(saleTokenAmount, 0);

        _checkBalanceAndAllowance(paymentTokenAmount);
        _updateSaleState(groupId, saleTokenAmount, paymentTokenAmount);
        _transferTokens(paymentTokenAmount, saleTokenAmount);

        emit TokensBought(msg.sender, saleTokenAmount, paymentTokenAmount, 0);
    }

    function buyUpToGroupAllocation(
        uint256 maxPaymentTokenAmount
    )
    internal
    {
        uint groupId = groupMembership[msg.sender];
        require(addressGroupAllocations[groupId] - tokensClaimedByGroup[groupId] > 0, "All tokens for your group are sold!");

        uint saleTokenAmount = _calculateSaleTokenAmount(maxPaymentTokenAmount, 1);

        require(saleTokenAmount > 0, "Too few payment tokens to buy sale token");

        if (saleTokenAmount > addressGroupAllocations[groupId] - tokensClaimedByGroup[groupId]) {
            saleTokenAmount = addressGroupAllocations[groupId] - tokensClaimedByGroup[groupId];
        }

        uint paymentTokenAmount = _calculatePaymentTokenAmount(saleTokenAmount, 1);
        _checkBalanceAndAllowance(paymentTokenAmount);
        _updateSaleState(groupId, saleTokenAmount, paymentTokenAmount);
        _transferTokens(paymentTokenAmount, saleTokenAmount);

        emit TokensBought(msg.sender, saleTokenAmount, paymentTokenAmount, 1);
    }

    function buyUpToSaleAllocation(
        uint256 maxPaymentTokenAmount
    )
    internal
    {
        require(totalSaleTokens - saleTokensSold > 0, "All tokens are sold");

        uint saleTokenAmount = _calculateSaleTokenAmount(maxPaymentTokenAmount, 2);

        require(saleTokenAmount > 0, "Too few payment tokens to buy sale token");

        if (saleTokenAmount > totalSaleTokens - saleTokensSold) {
            saleTokenAmount = totalSaleTokens - saleTokensSold;
        }

        uint groupId = groupMembership[msg.sender];

        uint paymentTokenAmount = _calculatePaymentTokenAmount(saleTokenAmount, 2);
        _checkBalanceAndAllowance(paymentTokenAmount);
        _updateSaleState(groupId, saleTokenAmount, paymentTokenAmount);
        _transferTokens(paymentTokenAmount, saleTokenAmount);

        emit TokensBought(msg.sender, saleTokenAmount, paymentTokenAmount, 2);
    }

}

