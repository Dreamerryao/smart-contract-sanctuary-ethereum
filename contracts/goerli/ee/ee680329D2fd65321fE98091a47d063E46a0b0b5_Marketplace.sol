import "@openzeppelin/contracts/token/ERC721/IERC721.sol";

import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
// Author: @marouenA
contract Marketplace is ReentrancyGuard {

    address payable public immutable feeAccount; //the account that receives fees
    address payable public immutable thierryAddress;
    uint public immutable feePercent; //the fee percentage on sale
    uint public itemCount;


    struct Item {uint itemId;
        IERC721 nft;
        uint tokenId;
        uint price;
        uint level;
        address payable seller;
        bool listed;}

    mapping(uint => Item) public items;

    event Offered(uint itemId, address indexed nft, uint tokenId, uint price, uint level, address indexed seller );
    event Bought(uint itemId, address indexed nft, uint tokenId, uint price, uint level, address indexed seller, address indexed buyer);

    constructor(uint _feePercent) {
        feeAccount = payable(msg.sender);
        thierryAddress = payable(msg.sender);
        feePercent = _feePercent;
    }

    function makeItem(IERC721 _nft, uint _tokenId, uint _price ,  uint _level) external nonReentrant {
        require(_price > 0, "Price must be greater than zero");
        itemCount++;
        _nft.transferFrom(msg.sender, address(this), _tokenId);
        items[itemCount] = Item(itemCount, _nft, _tokenId, _price,_level, payable(msg.sender), true);
        emit Offered(itemCount, address(_nft), _tokenId, _price,_level, msg.sender);
    }

    function purchaseItem(uint _itemId) external payable nonReentrant {
        uint _totalPrice = getTotalPrice(_itemId);
        Item storage item = items[_itemId];
        require(_itemId > 0 && _itemId <= itemCount , "item doesn't exist");
        require(msg.value >= _totalPrice , "not enough ethers to cover item price and market fee");
        require(item.listed,"item not listed yet");

        item.seller.transfer(item.price);
        feeAccount.transfer(_totalPrice - item.price);

        item.listed = false ;
        item.nft.transferFrom(address(this), msg.sender, item.tokenId);
        item.seller = payable (msg.sender);
        emit Bought(_itemId, address(item.nft), item.tokenId, item.price,item.level, item.seller, msg.sender);

    }

    function getTotalPrice( uint _itemId) view public returns (uint) {
        return (items[_itemId].price*(100+feePercent)/100);
    }
    function swapItem(uint _itemId, uint _newItemId) payable external  nonReentrant {
        // Item offeredItems =  get all items with swap possibility according level
        Item storage item = items[_itemId];
        Item storage newItem = items[_newItemId];
        require(_itemId > 0 && _itemId <= itemCount , "item doesn't exist");
        require(item.listed,"item not listed yet");

        //item.sold = true ;re
        //set approval
        //send token to userAddress
        newItem.nft.transferFrom(address(this), msg.sender, newItem.tokenId);
        newItem.seller = payable (msg.sender);
        newItem.listed = false;
        //send token to thierryAddress
        item.nft.transferFrom(address(this),thierryAddress, item.tokenId);
        item.seller = payable (thierryAddress);
        item.listed = false;

        //transfer other items to seller address
        emit Bought(_itemId, address(item.nft), item.tokenId, item.price,item.level, item.seller, msg.sender);

    }





}

