        _totalSupply.balance += amount.toUint128();
        _userState[onBehalfOf].balance += amount.toUint128();

        emit Transfer(address(0), onBehalfOf, amount);
        return (true, amount);
    }

    /// @inheritdoc IVariableDebtToken
    function burn(
        address from,
        uint256 amount,
        uint256
    ) external virtual override onlyPool returns (uint256) {
        require(amount != 0, "mint zero amount");
        require(from != address(0), "ERC20: mint to the zero address");

        _updateBalance(from);

        _totalSupply.balance -= amount.toUint128();
        _userState[from].balance -= amount.toUint128();

        emit Transfer(from, address(0), amount);
        return amount;
