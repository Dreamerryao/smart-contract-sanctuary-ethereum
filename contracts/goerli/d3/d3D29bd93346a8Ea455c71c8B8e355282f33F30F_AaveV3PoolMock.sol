        uint256 _annualIncome = uint256(userState.balance).rayMul(
            POOL.getReserveNormalizedVariableDebt(_underlyingAsset)
        );
        uint128 _income = ((_annualIncome * (block.timestamp - userState.timestamp)) / 365 days).toUint128();
        return _income;
    }

