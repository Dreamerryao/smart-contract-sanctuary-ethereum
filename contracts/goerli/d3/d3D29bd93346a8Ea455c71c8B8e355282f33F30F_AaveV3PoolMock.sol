        UserState memory oldState = _userState[_user];
        uint128 _income = _getIncome(oldState);
        _userState[_user] = UserState(oldState.balance + _income, block.timestamp.toUint128());

        UserState memory oldTotalSupply = _totalSupply;
        uint128 _incomeSupply = _getIncome(oldTotalSupply);
        _totalSupply = UserState(oldTotalSupply.balance + _incomeSupply, block.timestamp.toUint128());
    }
}

