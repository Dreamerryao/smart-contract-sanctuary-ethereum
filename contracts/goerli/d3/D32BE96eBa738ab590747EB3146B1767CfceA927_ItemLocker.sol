pragma solidity 0.8.15;

import "@openzeppelin/contracts/token/ERC1155/extensions/IERC1155MetadataURI.sol";
import "@openzeppelin/contracts/token/ERC721/extensions/IERC721Metadata.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/token/ERC1155/utils/ERC1155Holder.sol";
import "@openzeppelin/contracts/token/ERC721/utils/ERC721Holder.sol";
import "./RepresentativeNFT.sol";

contract ItemLocker is ERC1155Holder, ERC721Holder, AccessControl {
    /*==================================================== Events =============================================================*/

    event ItemLocked(address _player, address _item, uint256 _id);
    event ItemUsed(address _player, address _item, uint256 _id);
    event ItemWithdrawn(address _player, address _item, uint256 _id);
    event NewItemSet(address _item);
    
    /*==================================================== State Variables ====================================================*/

    // PlayerAddress => ItemContract => NFtId => numberOfAvailableItems
    mapping(address => mapping(address => mapping(uint256 => uint256)))
        private playerData;

    mapping(address => bool) public isItem;

    // PlayerAddress => ItemContract => itemId => rNFT Id
    mapping(address => mapping(address => mapping(uint256 => uint256))) public rNftIds;

    RepresentativeNFT public rNFT;

    /*==================================================== Constructor ========================================================*/
    constructor(address[] memory _items ,address _rNFT) {
        for (uint256 i = 0; i < _items.length; i++) {
            _setItem(_items[i]);
        }
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        rNFT = RepresentativeNFT(_rNFT);
    }

    /*==================================================== FUNCTIONS ==========================================================*/
    /*==================================================== Read Functions ======================================================*/
    function availableItems(address _player, address _itemAddress, uint256 _id) public view returns(uint256) {
      return playerData[_player][_itemAddress][_id];
    }
    /*==================================================== External Functions ==================================================*/
    function lockItem(
        address _player,
        address _itemAddress,
        uint256 _id,
        bool is721
    ) external {
        require(isItem[_itemAddress],"This item is not lockable");
        string memory _uri;

        if (is721) {
            IERC721Metadata(_itemAddress).safeTransferFrom(msg.sender, address(this), _id);
           _uri =  IERC721Metadata(_itemAddress).tokenURI(_id);
        } else {
            IERC1155MetadataURI(_itemAddress).safeTransferFrom(
                msg.sender,
                address(this),
                _id,
                1,
                ""
            );
            _uri = IERC1155MetadataURI(_itemAddress).uri(_id);
        }
        _savePlayer(_player, _itemAddress, _id);
       uint256 _rNFTId =  rNFT.mint(_player, _uri);
       rNftIds[_player][_itemAddress][_id] = _rNFTId;

        emit ItemLocked(_player, _itemAddress, _id);
    }

    function useItem(
        address _playerAddress,
        address _itemAddress,
        uint256 _id
    ) external onlyRole(DEFAULT_ADMIN_ROLE) {
       
        _useItem(_playerAddress, _itemAddress, _id);
        emit ItemUsed(_playerAddress, _itemAddress, _id);
    }

    function useItemBatch(address _playerAddress, address[] memory _itemAddresses, uint256[] memory _ids) external onlyRole(DEFAULT_ADMIN_ROLE) {
        require(_itemAddresses.length == _ids.length,"Missing argument!");
        for(uint256 i = 0; i < _ids.length; i++) {
            _useItem(_playerAddress, _itemAddresses[i], _ids[i]);
        }
    }

    function withdrawItem(address _itemAddress, uint256 _id, bool _is721) external {
        require(availableItems(msg.sender, _itemAddress, _id) > 0, "Player has no items available");
        if(_is721){
            IERC721Metadata(_itemAddress).safeTransferFrom(address(this), msg.sender, _id);
        } else {
            IERC1155(_itemAddress).safeTransferFrom(address(this), msg.sender, _id, 1, "");
        }
        _useItem(msg.sender, _itemAddress, _id);

        emit ItemWithdrawn(msg.sender, _itemAddress, _id);
    }

    function setItem(address _itemAddress)
        external
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        _setItem(_itemAddress);
    }

    /*==================================================== Internal Functions ==================================================*/
    function _savePlayer(
        address _playerAddress,
        address _itemAddress,
        uint256 _id
    ) internal {
        playerData[_playerAddress][_itemAddress][_id] += 1;
    }
    function _useItem(
        address _playerAddress,
        address _itemAddress,
        uint256 _id
    ) internal {
        require(isItem[_itemAddress],"This is not Wl item");
        require(availableItems(_playerAddress, _itemAddress, _id) > 0, "There is no available item with given data");
        uint256 _rNFTId = rNftIds[_playerAddress][_itemAddress][_id];
        require(rNFT.ownerOf(_rNFTId) == _playerAddress,"Unexpected rNFT owner");
        rNFT.burn(_rNFTId);
        playerData[_playerAddress][_itemAddress][_id] -= 1;
    }

    function _setItem(address _itemAddress) internal {
        isItem[_itemAddress] = true;
        emit NewItemSet(_itemAddress);
    }

    function supportsInterface(bytes4 interfaceId)
        public
        pure
        override(ERC1155Receiver, AccessControl)
        returns (bool)
    {
        return (interfaceId == type(ERC1155Receiver).interfaceId ||
            interfaceId == type(AccessControl).interfaceId);
    }
}

