    mapping(address => uint256) private _balances;

    mapping(uint256 => string) private _tokenURIs;


    constructor(string memory name_, string memory symbol_) {
        _name = name_;
        _symbol = symbol_;
    }

 
    function balanceOf(address owner) public view returns (uint256) {
        require(owner != address(0), "BaseNFT: address zero is not a valid owner");
        return _balances[owner];
    }

    function ownerOf(uint256 tokenId) public view returns (address) {
        address owner = _owners[tokenId];
        require(owner != address(0), "BaseNFT: invalid token ID");
        return owner;
    }

    function name() public view returns (string memory) {
        return _name;
    }

    function symbol() public view returns (string memory) {
        return _symbol;
    }

    function tokenURI(uint256 tokenId) public view returns (string memory) {
        _requireMinted(tokenId);

        string memory _tokenURI = _tokenURIs[tokenId];
        string memory base = _baseURI();

        // If both are set, concatenate the baseURI and tokenURI (via abi.encodePacked).
        if (bytes(_tokenURI).length > 0) {
            return string(abi.encodePacked(base, _tokenURI));
        } else {
            return _tokenURI;
        }
    }

    function _baseURI() internal view virtual returns (string memory) {
        return "";
    }

    function _exists(uint256 tokenId) internal view virtual returns (bool) {
        return _owners[tokenId] != address(0);
    }

    function _mint(address to, uint256 tokenId) internal virtual {
        require(to != address(0), "BaseNFT: mint to the zero address");
        require(!_exists(tokenId), "BaseNFT: token already minted");
        _balances[to] += 1;
        _owners[tokenId] = to;
    }

    function _burn(uint256 tokenId) internal virtual {
        address owner = BaseNFT.ownerOf(tokenId);
        _balances[owner] -= 1;
        delete _owners[tokenId];

    }
    
    function _requireMinted(uint256 tokenId) internal view virtual {
        require(_exists(tokenId), "BaseNFT: invalid token ID");
    }
    
    function _setTokenURI(uint256 tokenId, string memory _tokenURI) internal virtual {
        require(_exists(tokenId), "BaseNFT: nonexistent token");
        _tokenURIs[tokenId] = _tokenURI;
    }

}