contract Burner is
    Initializable,
    OwnableUpgradeable,
    AutomationCompatibleInterface
{
    using SafeERC20Upgradeable for IERC20Upgradeable;
    using SafeMathUpgradeable for uint256;

    struct HoldersBurnInfo {
        uint256 burnAmount;
        uint256 holdersCount;
    }

    address public constant burnAddress =
        0x000000000000000000000000000000000000dEaD;

    uint256 public moonPhaseBurnAmount;

    address public treasury;
    address public tltToken;

    uint256 public burnedForHolders;
    uint256 public burnedForMoonPhases;

    uint256 public nextPhaseId;

    mapping(uint256 => bool) moonPhaseBurned;

    uint256[] public moonPhasesTimestamps;

    HoldersBurnInfo[] private holderBurnInfos;

    event MoonPhaseChange(uint256[] newMoonPhases);

    event BurnForHolders(uint256 indexed burnAmount);

    event BurnForPhase(
        uint256 indexed burnAmount,
        uint256 indexed phaseId,
        uint256 indexed phaseTimestamp
    );

    /// @dev using initializer to be able to
    /// create a cheap clone from token constructor
    function initialize(
        address _owner,
        address _treasury,
        address _tltToken,
        uint256 _tltTokenDecimals,
        uint256[] memory _moonPhaseTimestamps
    ) public initializer {
        __Ownable_init_unchained();
        transferOwnership(_owner);

        treasury = _treasury;
        tltToken = _tltToken;

        moonPhaseBurnAmount = 5_000_000_000 * (10**_tltTokenDecimals);
        moonPhasesTimestamps = _moonPhaseTimestamps;

        _initHoldersBurnInfos(_tltTokenDecimals);
    }

    function setMoonPhases(uint256[] memory moonPhases) external onlyOwner {
        moonPhasesTimestamps = moonPhases;
        emit MoonPhaseChange(moonPhases);
    }

    function checkUpkeep(
        bytes memory /*checkData*/
    ) public override returns (bool upkeepNeeded, bytes memory) {
        (bool needBurnForHolders, bool needBurnForMoonPhase) = _checkUpkeep();
        upkeepNeeded = needBurnForHolders || needBurnForMoonPhase;
    }

    function performUpkeep(
        bytes calldata /*performData*/
    ) external override {
        bool needBurnForMoonPhase = canBurnForNextMoonPhase(nextPhaseId);
        (bool needBurnForHolders, uint256 toBurnAmount) = canBurnForHolders(
            _getTLTHolders()
        );

        require(
            needBurnForHolders || needBurnForMoonPhase,
            "Burner: upkeep is not needed"
        );

        if (needBurnForHolders) {
            _burnForHolders(toBurnAmount);
        }

        if (needBurnForMoonPhase) {
            _burnForMoonPhases();
        }
    }

    function canBurnForNextMoonPhase(uint256 _nextPhaseId)
        public
        view
        returns (bool)
    {
        if (moonPhaseBurned[_nextPhaseId]) return false;

        if (_nextPhaseId >= moonPhasesTimestamps.length) return false;
        if (block.timestamp < moonPhasesTimestamps[_nextPhaseId]) return false;
        return true;
    }

    function canBurnForHolders(uint256 _holdersCount)
        public
        view
        returns (bool canBurn, uint256 toBurnAmount)
    {
        uint256 totalBurnAmount = getBurnAmountForHolders(_holdersCount);
        uint256 _burnedForHolders = burnedForHolders;

        if (totalBurnAmount <= _burnedForHolders) return (false, 0);

        return (true, totalBurnAmount.sub(_burnedForHolders));
    }

    function getBurnAmountForHolders(uint256 _holdersCount)
        public
        view
        returns (uint256 totalBurnAmount)
    {
        for (uint256 i; i < holderBurnInfos.length; i++) {
            if (holderBurnInfos[i].holdersCount > _holdersCount) break;
            totalBurnAmount = totalBurnAmount.add(
                holderBurnInfos[i].burnAmount
            );
        }
    }

    function _burnForHolders(uint256 toBurnAmount) private returns (uint256) {
        burnedForHolders = burnedForHolders.add(toBurnAmount);

        _burnTlt(toBurnAmount);
        emit BurnForHolders(toBurnAmount);

        return toBurnAmount;
    }

    function _burnForMoonPhases() private {
        uint256 _nextPhaseId = nextPhaseId; // gas saving

        uint256 phaseTimestamp = moonPhasesTimestamps[_nextPhaseId];

        require(!moonPhaseBurned[_nextPhaseId], "Burner: phase already burned");

        require(
            block.timestamp >= phaseTimestamp,
            "Burner: phase is not started"
        );

        moonPhaseBurned[_nextPhaseId] = true;

        nextPhaseId = _nextPhaseId.add(1);

        uint256 burnAmount = moonPhaseBurnAmount;

        burnedForMoonPhases = burnedForMoonPhases.add(burnAmount);

        _burnTlt(burnAmount);

        emit BurnForPhase(burnAmount, _nextPhaseId, phaseTimestamp);
    }

    function _burnTlt(uint256 _burnAmount) private {
        IERC20Upgradeable(tltToken).transferFrom(
            treasury,
            burnAddress,
            _burnAmount
        );
    }

    function _addHolderBurnInfo(
        uint256 _burnAmountNoDecimals,
        uint256 _holdersCount,
        uint256 _tltTokenDecimals
    ) private {
        holderBurnInfos.push(
            HoldersBurnInfo({
                burnAmount: _burnAmountNoDecimals * (10**_tltTokenDecimals),
                holdersCount: _holdersCount
            })
        );
    }

    function _initHoldersBurnInfos(uint256 _tltTokenDecimals) private {
        _addHolderBurnInfo(31_400_000_000, 500, _tltTokenDecimals);
        _addHolderBurnInfo(22_000_000_000, 1000, _tltTokenDecimals);
        _addHolderBurnInfo(11_000_000_000, 5000, _tltTokenDecimals);
        _addHolderBurnInfo(22_000_000_000, 10000, _tltTokenDecimals);
        _addHolderBurnInfo(31_400_000_000, 25000, _tltTokenDecimals);
        _addHolderBurnInfo(11_000_000_000, 50000, _tltTokenDecimals);
        _addHolderBurnInfo(22_000_000_000, 100000, _tltTokenDecimals);
        _addHolderBurnInfo(31_400_000_000, 250000, _tltTokenDecimals);
    }

    function _checkUpkeep()
        private
        view
        returns (bool needBurnForHolders, bool needBurnForMoonPhase)
    {
        needBurnForMoonPhase = canBurnForNextMoonPhase(nextPhaseId);
        (needBurnForHolders, ) = canBurnForHolders(_getTLTHolders());
    }

    function _getTLTHolders() private view returns (uint256) {
        return TWOLANDS(tltToken).holdersCount();
    }
}

