import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/utils/Counters.sol";

import "./interfaces/IPFP.sol";

contract PFPMinter is AccessControl, Pausable {
	/// @notice The address of the Polar PFP contract
	IPFP public pfp;

	/// @notice Tracks the total count of NFTs for sale
	uint256 public supplyLimit = 10000;

	/// @dev Used for incrementing the token IDs
	using Counters for Counters.Counter;
	Counters.Counter internal _tokenIds;

	event Mint(address indexed to, uint256 indexed tokenId);

	/**
	 @dev Create the contract and sets the PFP address.
	 @param pfp_ The address of the PFP contract
	 */
	constructor(IPFP pfp_) {
		_grantRole(DEFAULT_ADMIN_ROLE, msg.sender);

		setPFPAddress(pfp_);
	}

	// ------------------------------
	// 			  Minting
	// ------------------------------

	function _mint(address to) internal virtual {
		// Generate token id
		_tokenIds.increment();
		uint256 tokenId = _tokenIds.current();

		pfp.mint(to, tokenId);

		emit Mint(to, tokenId);
	}

	function availableSupply() external view returns (uint256) {
		return supplyLimit - _tokenIds.current();
	}

	function currentTokenId() external view returns (uint256) {
		return _tokenIds.current();
	}

	// ------------------------------
	// 			  Setters
	// ------------------------------

	/// @notice Sets the address of the Polar PFP contract
	function setPFPAddress(IPFP pfp_) public onlyRole(DEFAULT_ADMIN_ROLE) {
		pfp = pfp_;
	}

	/// @notice Sets the number of available tokens
	function setSupplyLimit(uint256 supplyLimit_)
		public
		onlyRole(DEFAULT_ADMIN_ROLE)
	{
		supplyLimit = supplyLimit_;
	}

	// ------------------------------
	// 			  Modifiers
	// ------------------------------

	/**
	@dev Modifier to make a function callable only when there is enough PFP left for sale
	
	Requirements:

	- Number of PFPs sold must be less than the maximum for sale
	*/
	modifier whenSupplyRemains(uint256 mintAmount) {
		uint256 mintedCount = _tokenIds.current();

		require(mintedCount < supplyLimit, "Sold out");

		require(
			mintedCount + mintAmount <= supplyLimit,
			"Not enough remaining"
		);
		_;
	}
}

