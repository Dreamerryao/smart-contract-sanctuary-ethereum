pragma solidity ^0.8.0;

import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

import "./PFPMinter.sol";
import "./interfaces/IPFP.sol";
import "../utils/Whitelists.sol";

/**
 * @notice This is a 2-phase minter contract that includes a mintlist and public sale.
 * @dev This is a heavily modified version of the Forgotten Runes Warriors Minters contract.
 * @dev The contract can be found at https://etherscan.io/address/0xB4d9AcB0a6735058908E943e966867A266619fBD#code.
 */
contract PFP2PhaseMinter is PFPMinter, ReentrancyGuard {
	/// @notice The start timestamp for the mintlist sale
	uint256 public mintlistStartTime =
		0xffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff;

	/// @notice The start timestamp for the public sale
	uint256 public publicStartTime =
		0xffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff;

	/// @notice The whitelist for the mintlist sale
	using Whitelists for Whitelists.MerkleProofWhitelist;
	Whitelists.MerkleProofWhitelist private whitelist;

	/// @notice The address of the vault
	address payable public vault;

	/// @notice The price of a mint
	uint256 public price = 0.1 ether;

	/// @notice The total number of tokens an address can mint
	uint256 public mintsPerAddress = 3;

	/// @notice Tracks the total count of NFTs minted by a given address in all phases
	mapping(address => uint256) public addressToMints;

	/**
	 @dev Create the contract and sets the PFP contract and vault addresses.
	 @param pfp_ The address of the PFP contract
	 */
	constructor(IPFP pfp_) PFPMinter(pfp_) {
		setVaultAddress(payable(msg.sender));
	}

	/*
	 Timeline:
	 
	 mintlistSale    :|-------------------------|
	 publicSale      :             |------------|
	 */

	// ------------------------------
	// 		   Mintlist Sale
	// ------------------------------

	/**
	 @notice Mint a PFP in the mintlist phase (paid)
	 @param merkleProof bytes32[] of the merkle proof of the minting address
	 */
	function mintlistMint(bytes32[] calldata merkleProof)
		external
		payable
		nonReentrant
		whenNotPaused
		inMintlistPhase
		onlyWhitelisted(msg.sender, merkleProof)
		whenSupplyRemains(1)
		whenAddressCanMint(msg.sender, 1)
	{
		require(msg.value == price, "Ether value incorrect");

		_mint(msg.sender);
	}

	/**
    @notice Returns true it the user is included in the whitelist
    @param user address of the user
    @param merkleProof uint256[] of the merkle proof of the user address
    */
	function isWhitelisted(address user, bytes32[] calldata merkleProof)
		public
		view
		returns (bool)
	{
		return whitelist.isWhitelisted(user, merkleProof);
	}

	/**
	@notice Returns true if the mintlist sale has started
	 */
	function isMintlistStarted() external view returns (bool) {
		return _hasStarted(mintlistStartTime);
	}

	// ------------------------------
	// 			Public Sale
	// ------------------------------

	/**
	@notice Mint a PFP in the Public phase (paid)
	@param numPfps uint256 of the number of PFPs to mint
	*/
	function publicMint(uint256 numPfps)
		external
		payable
		nonReentrant
		whenNotPaused
		inPublicPhase
		whenSupplyRemains(numPfps)
		whenAddressCanMint(msg.sender, numPfps)
	{
		require(
			msg.value == (price * numPfps),
			"Ether value sent is incorrect"
		);

		for (uint256 i = 0; i < numPfps; i++) {
			_mint(msg.sender);
		}
	}

	/**
	@notice Returns true if the public sale has started
	*/
	function isPublicStarted() external view returns (bool) {
		return _hasStarted(publicStartTime);
	}

	// ------------------------------
	// 			  Minting
	// ------------------------------

	/**
	@notice Mint a PFP by calling the PFP contract's mint function
	@param to address of the user to receive the PFP
	@dev Override the default mint function to increment the address' mint count
	*/
	function _mint(address to) internal override {
		addressToMints[msg.sender]++;

		super._mint(to);
	}

	// ------------------------------
	// 			 Withdrawal
	// ------------------------------

	/**
	 @notice Withdraw funds to the vault
	 @param _amount uint256 the amount to withdraw
	 */
	function withdraw(uint256 _amount)
		external
		onlyRole(DEFAULT_ADMIN_ROLE)
		hasVault
	{
		require(payable(vault).send(_amount));
	}

	/**
	 @notice Withdraw all funds to the vault
	 */
	function withdrawAll() external onlyRole(DEFAULT_ADMIN_ROLE) hasVault {
		require(payable(vault).send(address(this).balance));
	}

	// ------------------------------
	// 			  Setters
	// ------------------------------

	/**
	@notice A convenient way to set phase times at once
	@param mintlistStartTime_ uint256 the mintlist start time
	@param publicStartTime_ uint256 the public sale start time
	*/
	function setPhaseTimes(uint256 mintlistStartTime_, uint256 publicStartTime_)
		external
		onlyRole(DEFAULT_ADMIN_ROLE)
	{
		setMintlistStartTime(mintlistStartTime_);
		setPublicStartTime(publicStartTime_);
	}

	/**
	@notice Sets the mintlist start time
	@param mintlistStartTime_ uint256 the mintlist start time
	*/
	function setMintlistStartTime(uint256 mintlistStartTime_)
		public
		onlyRole(DEFAULT_ADMIN_ROLE)
	{
		mintlistStartTime = mintlistStartTime_;
	}

	/**
	@notice Sets the public start time
	@param publicStartTime_ uint256 the public sale start time
	*/
	function setPublicStartTime(uint256 publicStartTime_)
		public
		onlyRole(DEFAULT_ADMIN_ROLE)
	{
		publicStartTime = publicStartTime_;
	}

	/**
	@notice Sets the vault address
	@param vault_ address of the vault
	*/
	function setVaultAddress(address payable vault_)
		public
		onlyRole(DEFAULT_ADMIN_ROLE)
	{
		vault = vault_;
	}

	/**
	@notice Sets the number of tokens an address can mint
	@param mintsPerAddress_ uint256 the number of tokens an address can mint
	*/
	function setMintsPerAddress(uint256 mintsPerAddress_)
		public
		onlyRole(DEFAULT_ADMIN_ROLE)
	{
		mintsPerAddress = mintsPerAddress_;
	}

	/**
	@notice Sets the price of a mint
	@param price_ uint256 the price of a mint
	*/
	function setPrice(uint256 price_) public onlyRole(DEFAULT_ADMIN_ROLE) {
		price = price_;
	}

	// ------------------------------
	// 			  Modifiers
	// ------------------------------

	/**
    @dev Modifier to make a function callable only when in the mintlist phase

    Requirements:

    - Current block timestamp must be greater than the mintlist start time
    */
	modifier inMintlistPhase() {
		require(_hasStarted(mintlistStartTime), "Mintlist phase not started");
		_;
	}

	/**
    @dev Modifier to make a function callable only when in the public sale phase

    Requirements:

    - Current block timestamp must be greater than the public sale start time
    */
	modifier inPublicPhase() {
		require(_hasStarted(publicStartTime), "Public sale phase not started");
		_;
	}

	/**
    @dev Modifier to make a function callable only when the user is included in the mintlist whitelist

    Requirements:

    - Merkle proof of user address must be valid
    */
	modifier onlyWhitelisted(address user, bytes32[] calldata merkleProof) {
		require(whitelist.isWhitelisted(user, merkleProof), "Not whitelisted");
		_;
	}

	/**
    @dev Modifier to make a function callable only when the user will not exceed their mints per wallet limit

    Requirements:

    - User address' mint count must be less than the mints per address limit after mint
    */
	modifier whenAddressCanMint(address user, uint256 mintAmount) {
		require(
			addressToMints[user] + mintAmount <= mintsPerAddress,
			"Mints per wallet limit reached"
		);
		_;
	}

	/**
    @dev Modifier to make a function callable only when the vault address is valid

    Requirements:

    - The vault must be a non-zero address
    */
	modifier hasVault() {
		require(address(vault) != address(0), "No vault");
		_;
	}

	// ------------------------------
	// 			 Utilities
	// ------------------------------

	/**
	 @notice Returns true if the start time has passed
	 @param startTime uint256 of the start time
	 */
	function _hasStarted(uint256 startTime) internal view returns (bool) {
		return block.timestamp > startTime;
	}
}

