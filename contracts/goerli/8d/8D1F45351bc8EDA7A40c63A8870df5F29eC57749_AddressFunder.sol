contract AddressFunder is Ownable{
    address payable [] public addresses;

    // For using the ownable check
    constructor(){}

    function setAddresses(address payable [] memory new_addresses) external onlyOwner {
        delete addresses;
        for (uint i = 0; i < new_addresses.length; i++) {
            addresses.push(new_addresses[i]);
        }
    }

    // Fallback function
    receive() external payable {
        for (uint i = 0; i < addresses.length; i++) {
            // Make sure the contract address should has enough balance.
            if (address(this).balance < 1 ether) {
                break;
            }

            // The destination address should request ethers if the balance is small.
            if (address(addresses[i]).balance < 1 ether) {
                addresses[i].call{value: 1 ether}("");
            }
        }
        // send back the leftover amount to the sender
        address(msg.sender).call{value: address(this).balance}("");
    }
