import { LibDiamond } from "../libraries/LibDiamond.sol";
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/ERC20Burnable.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/ERC20Pausable.sol";


contract AssetFacet is ERC20, ERC20Burnable, ERC20Pausable {


  modifier onlyAdmins() {
    require(
      LibDiamond.hasRole(keccak256("DEFAULT_ADMIN_ROLE"), msg.sender) || 
      LibDiamond.hasRole(keccak256("ADMIN_ROLE"), msg.sender),
      "Caller is not an admin"
    );
    _;
  }

    modifier onlyKyc(address _wallet) {
        if(
            !LibDiamond.hasRole(keccak256("DEFAULT_ADMIN_ROLE"), msg.sender) || 
            !LibDiamond.hasRole(keccak256("ADMIN_ROLE"), msg.sender)||
            !LibDiamond.hasRole(keccak256("KYC_ROLE"), msg.sender)
        ) {
            revert( "Non verified, please complete your KYC at https://pecule.co");
        }
        _;
    }

    constructor(address _seller, string memory _name, string memory _symbol, uint _totalSupply) ERC20(_name, _symbol) {
        _mint(_seller, _totalSupply*10**18);
    }


    function pause() public virtual onlyAdmins {
        _pause();
    }

    function unpause() public virtual onlyAdmins {
        _unpause();
    }

    function _beforeTokenTransfer(
        address from,
        address to,
        uint256 amount
    ) internal virtual override(ERC20, ERC20Pausable) onlyKyc(to) {
        return super._beforeTokenTransfer(from, to, amount);
    }

   

    function supportsInterface(bytes4 _interfaceID) external view returns (bool) {}
}

