pragma solidity ^0.8.0;

import { LibDiamond } from "../libraries/LibDiamond.sol";
import "./AssetFacet.sol";

contract FactoryFacet {

    function newAsset(
    string memory _assetName,
    string memory _assetSymbol,
    uint _totalSupply
    ) external returns (address) {
        require(LibDiamond.hasRole(keccak256("DEFAULT_ADMIN_ROLE"), msg.sender), "Caller is not a super admin");

        AssetFacet asset = new AssetFacet(
            msg.sender,
            _assetName,
            _assetSymbol,
            _totalSupply
        );

        LibDiamond._addAsset(address(asset));
        LibDiamond._increaseAssetCounter();

        return address(asset);

    }

    function supportsInterface(bytes4 _interfaceID) external view returns (bool) {}
}

