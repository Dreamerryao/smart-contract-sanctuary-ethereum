/// @title Legend Maps ERC20
/// @author Legend Maps
/// @notice ERC20 token with 1:1 represention of in game currency for the Legend Maps game.
contract LMapsERC20 is ERC20, ReentrancyGuard {
    /* ------------------------------------------------------------------------
       S T O R A G E
    ------------------------------------------------------------------------ */

    /// @dev Reference to the main token ownership contract so this contract can
    ///      call operator related functions on it
    address public gameTokens;

    /* ------------------------------------------------------------------------
       E R R O R S
    ------------------------------------------------------------------------ */

    /// @dev When a player doesn't have enough token balance to deposit back into the game
    error InsufficientBalance();

    /* ------------------------------------------------------------------------
       I N I T
    ------------------------------------------------------------------------ */

    /// @dev Zero decimal ERC20 for 1:1 mapping with in game currency
    /// @param name_ The token name e.g. "Legend Maps Currency"
    /// @param symbol_ The token symbol e.g. "LEGEND"
    /// @param gameTokens_ The address of the token ownership contract
    constructor(
        string memory name_,
        string memory symbol_,
        address gameTokens_
    ) ERC20(name_, symbol_, 0) {
        gameTokens = gameTokens_;
    }

    /* ------------------------------------------------------------------------
       S W A P P I N G   I G C   F O R   E R C 2 0
    ------------------------------------------------------------------------ */

    /// @notice Withdraw some in game currency and get an ERC20 of the same amount in return
    /// @dev Will revert if the player has less than `amount` of in game currency
    /// @param amount The amount of in game currency you want to withdraw
    function withdrawInGameCurrencyToToken(uint256 amount) external nonReentrant {
        // Replace with id of the IGC token
        uint256 tokenIdOfIGC = 1;

        // Burn the IGC balance (which will revert if the player doesn't have enough IGC tokens)
        ILMapsGameTokens(gameTokens).spendTokens(tokenIdOfIGC, amount, msg.sender);

        // Mint ERC-20 tokens 1:1
        // TODO Mint correct amount using decimals
        _mint(msg.sender, amount);
    }

    /// @notice Deposit some ERC20 and get the same amount of in game currency
    /// @dev Will revert if the player has less than `amount` of ERC20 tokens
    /// @param amount The amount of ERC20 tokens you want to deposit back into the game
    function depositTokenToInGameCurrency(uint256 amount) external nonReentrant {
        // Replace with id of the IGC token
        uint256 tokenIdOfIGC = 1;

        // Verify ERC-20 token balance
        if (amount > balanceOf[msg.sender]) revert InsufficientBalance();

        // Burn ERC-20 tokens
        _burn(msg.sender, amount);

        // Mint the IGC token 1:1
        // TODO Mint correct amount using decimals
        ILMapsGameTokens(gameTokens).issueTokens(tokenIdOfIGC, amount, msg.sender);
    }
}

