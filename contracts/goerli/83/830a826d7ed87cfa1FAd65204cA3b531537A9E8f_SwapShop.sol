import '@openzeppelin/contracts/access/Ownable.sol';
import '@openzeppelin/contracts/security/Pausable.sol';
import '@openzeppelin/contracts/utils/Strings.sol';
import '@openzeppelin/contracts/utils/structs/EnumerableSet.sol';

error CannotLoadWolf();
error CannotSwapWolf();
error NoSheepLoaded();
error NoSheepSwapped();
error NotEnoughGen0SheepForSwap();
error NotEnoughGen1SheepForSwap();
error InsufficientPayment();
error NotDelegator();

interface IWoolf {
    struct SheepWolf {
        bool isSheep;
        uint8 fur;
        uint8 head;
        uint8 ears;
        uint8 eyes;
        uint8 nose;
        uint8 mouth;
        uint8 neck;
        uint8 feet;
        uint8 alphaIndex;
    }
    function getTokenTraits(uint256 tokenId) external view returns (SheepWolf memory);
    function getPaidTokens() external view returns (uint256);
}

interface IWolfGameReborn {
    function woolf() external view returns (address);
    function transferFrom(address from, address to, uint256 tokenId) external;
}

contract SwapShop is Ownable, Pausable {
    using EnumerableSet for EnumerableSet.UintSet;

    IWoolf public wolfGame;
    IWolfGameReborn public wolfGameReborn;
    address public delegatorAddress;
    uint256 public gen0Price;
    uint256 public gen1Price;
    EnumerableSet.UintSet private _gen0SheepIds;
    EnumerableSet.UintSet private _gen1SheepIds;

    constructor(address initialWolfGameRebornAddress, uint256 initialGen0Price, uint256 initialGen1Price)
    Ownable() {
        wolfGameReborn = IWolfGameReborn(initialWolfGameRebornAddress);
        wolfGame = IWoolf(wolfGameReborn.woolf());
        gen0Price = initialGen0Price;
        gen1Price = initialGen1Price;
        delegatorAddress = _msgSender();
    }

    // Util

    modifier onlyDelegator() {
        if (delegatorAddress != _msgSender()) {
            revert NotDelegator();
        }
        _;
    }

    function random(uint256 seed) internal view returns (uint256) {
        return uint256(keccak256(abi.encodePacked(tx.origin, blockhash(block.number - 1), block.timestamp, seed)));
    }

    // Views

    function stock() external view returns (uint256[] memory gen0SheepIds, uint256[] memory gen1SheepIds) {
        return (_gen0SheepIds.values(), _gen1SheepIds.values());
    }

    // Admin

    function withdraw() external onlyOwner {
        uint256 balance = address(this).balance;
        payable(owner()).transfer(balance);
    }

    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }

    function setDelegatorAddress(address newDelegatorAddress) external onlyOwner {
        delegatorAddress = newDelegatorAddress;
    }

    function setGen0Price(uint256 newGen0Price) external onlyOwner {
        gen0Price = newGen0Price;
    }

    function setGen1Price(uint256 newGen1Price) external onlyOwner {
        gen1Price = newGen1Price;
    }

    // Delegator

    function loadSheep(uint256[] calldata tokenIds) external onlyDelegator whenNotPaused {
        uint256 paidTokenCount = wolfGame.getPaidTokens();
        for (uint256 i = 0; i < tokenIds.length; i += 1) {
            uint256 tokenId = tokenIds[i];
            IWoolf.SheepWolf memory tokenTraits = wolfGame.getTokenTraits(tokenId);
            if (!tokenTraits.isSheep) {
                revert CannotLoadWolf();
            }
            wolfGameReborn.transferFrom(_msgSender(), address(this), tokenId);
            bool isGen0 = tokenId <= paidTokenCount;
            if (isGen0) {
                _gen0SheepIds.add(tokenId);
            } else {
                _gen1SheepIds.add(tokenId);
            }
        }
    }

    function withdrawSheep(uint256[] calldata tokenIds) external onlyDelegator whenNotPaused {
        for (uint256 i = 0; i < tokenIds.length; i += 1) {
            wolfGameReborn.transferFrom(address(this), _msgSender(), tokenIds[i]);
        }
    }

    function withdrawAllSheep() external onlyDelegator whenNotPaused {
        uint256 gen0SheepCount = _gen0SheepIds.length();
        uint256 gen1SheepCount = _gen1SheepIds.length();
        if (gen0SheepCount + gen1SheepCount == 0) {
            revert NoSheepLoaded();
        }
        for (uint256 i = 0; i < gen0SheepCount; i += 1) {
            uint256 tokenId = _gen0SheepIds.at(i);
            wolfGameReborn.transferFrom(address(this), _msgSender(), tokenId);
        }
        for (uint256 i = 0; i < gen1SheepCount; i += 1) {
            uint256 tokenId = _gen1SheepIds.at(i);
            wolfGameReborn.transferFrom(address(this), _msgSender(), tokenId);
        }
    }

    // Users

    function _swapForGen1(uint256 incomingTokenId) internal {
        if (_gen1SheepIds.length() == 0) {
            revert NotEnoughGen1SheepForSwap();
        }
        uint256 randomIndex = random(incomingTokenId) % _gen1SheepIds.length();
        uint256 tokenId = _gen1SheepIds.at(randomIndex);
        _gen1SheepIds.remove(tokenId);
        wolfGameReborn.transferFrom(_msgSender(), delegatorAddress, incomingTokenId);
        wolfGameReborn.transferFrom(address(this), _msgSender(), tokenId);
    }

    function _swapForGen0(uint256 incomingTokenId) internal {
        if (_gen0SheepIds.length() == 0) {
            revert NotEnoughGen0SheepForSwap();
        }
        uint256 randomIndex = random(incomingTokenId) % _gen0SheepIds.length();
        uint256 tokenId = _gen0SheepIds.at(randomIndex);
        _gen0SheepIds.remove(tokenId);
        wolfGameReborn.transferFrom(_msgSender(), delegatorAddress, incomingTokenId);
        wolfGameReborn.transferFrom(address(this), _msgSender(), tokenId);
    }

    function swapSheep(uint256[] calldata tokenIds, bool allowGen0ForGen1) external payable whenNotPaused {
        if (tokenIds.length == 0) {
            revert NoSheepSwapped();
        }

        uint256 paidTokenCount = wolfGame.getPaidTokens();
        uint256 expectedCost = 0;
        for (uint256 i; i < tokenIds.length; i++) {
            uint256 tokenId = tokenIds[i];
            IWoolf.SheepWolf memory tokenTraits = wolfGame.getTokenTraits(tokenId);
            if (!tokenTraits.isSheep) {
                revert CannotSwapWolf();
            }
            bool isGen0 = tokenId <= paidTokenCount;
            if (isGen0) {
                if (_gen0SheepIds.length() == 0 && allowGen0ForGen1) {
                    _swapForGen1(tokenId);
                    expectedCost += gen1Price;
                } else {
                    _swapForGen0(tokenId);
                    expectedCost += gen0Price;
                }
            } else {
                _swapForGen1(tokenId);
                expectedCost += gen1Price;
            }
        }

        if (msg.value < expectedCost) {
            revert InsufficientPayment();
        }
        // NOTE(krishan711): get the transferred tokenIds from events :eyes:
    }
}