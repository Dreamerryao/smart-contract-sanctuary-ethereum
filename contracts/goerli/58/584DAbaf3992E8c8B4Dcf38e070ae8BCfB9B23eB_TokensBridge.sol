// File contracts/TokensBridge.sol


pragma solidity ^0.8.0;



contract TokensBridge is Ownable {
    IStarknetCore starknetCore;

    constructor(
        address starknetCore_
    ){
        starknetCore = IStarknetCore(starknetCore_);

    }

    function deposit(address tokenToBridgeAddress, uint256 l2ContractAddress,uint256 selector, uint256 amount) external {
        
        //transfer funds to contract
        IERC20 token = IERC20(tokenToBridgeAddress);
        token.transferFrom(
            address(msg.sender),
            address(this),
            amount
        );
        
        // This will revert the (Ethereum) transaction if the message does not exist.
        uint256[] memory sender_payload = new uint256[](2);
        sender_payload[0] = l2ContractAddress;
        sender_payload[1] = amount;

        // Send the message to the StarkNet core contract.
        starknetCore.sendMessageToL2(
            l2ContractAddress,
            selector,
            sender_payload
        );
    }

    function withdrawFromL2(address tokenToBridgeAddress, uint256 l2ContractAddress, uint256 amount) external {
        uint256[] memory payload = new uint256[](3); 
        payload[0] = 0; //0 = to recognize the withdraw type
        payload[1] = uint256(uint160(msg.sender));
        payload[2] = amount;
        // Consume the message from the StarkNet core contract.
        // This will revert the (Ethereum) transaction if the message does not exist.
        starknetCore.consumeMessageFromL2(l2ContractAddress, payload);
        
        //trasfer user his funds
        IERC20 token = IERC20(tokenToBridgeAddress);
        token.transfer(msg.sender, amount);
    }
}