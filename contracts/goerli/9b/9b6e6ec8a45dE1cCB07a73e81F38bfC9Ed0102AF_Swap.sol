// Rename Post-trade Processor instead of Swap
contract Swap is Ownable {
    using Timers for Timers.BlockNumber;

    bytes4 private immutable TOKEN_INTERFACE_ID = type(IToken).interfaceId;

    struct CapitalCall {
        Timers.BlockNumber deadline;
        uint256 amount;
        address token;
    }

    struct Listing {
        Timers.BlockNumber deadline;
        address seller;
        address token;
        uint256 amount;
        uint64 price;
    }

    mapping(uint256 => CapitalCall) private _capitalCalls;
    mapping(address => Listing) private _listings;
    mapping(address => address) private _whitelist;

    event CapitalCalled(address indexed token0, uint256 indexed callId, uint256 amount, uint64 deadline);
    event Commitment(address indexed token, address indexed caller, uint256 amount);
    event Payment(address indexed token0, address indexed caller, address token1, uint256 amount);
    event TokenListed(
        address indexed creator,
        address indexed token,
        address indexed currency,
        uint256 deadline,
        uint64 price,
        uint256 amount
    );

    event Allowed(address indexed token, address indexed seller);
    event Revoked(address indexed token, address indexed seller);

    constructor() {}

    /**
     * @dev Add a listing representing the sale offering for a token of fund
     *
     * @param token0 address of the token listed for sale
     * @param token1 address of the token accepted as payment
     * @param amount number of token0 on sale
     * @param expiration block number of the sale offering end
     * @param price amount of token1 required to buy one unit of token0
     *
     * May emit a {TokenListed} event.
     */
    function list(
        address token0,
        address token1,
        uint256 amount,
        uint64 expiration,
        uint64 price
    ) external returns (bool) {
        require(_whitelist[token0] == msg.sender, "Swap: account not allowed");
        require(token0 != address(0), "Swap: token0 is address zero");
        require(token1 != address(0), "Swap: token1 is address zero");
        require(
            ERC165Checker.supportsInterface(token0, TOKEN_INTERFACE_ID),
            "Swap: doesn't support token0 interface"
        );
        // TODO check interface with assembly :
        // https://medium.com/@blockchain101/calling-the-function-of-another-contract-in-solidity-f9edfa921f4c
        // require(
        //     ERC165Checker.supportsAllInterfaces(token1, _ERC20InterfaceIds()),
        //     "Swap: doesn't support token1 interface"
        // );
        require(IToken(token0).hasRole(0x00, msg.sender), "Swap: sender is not token0 admin");

        Listing storage listing = _listings[token0];
        require(listing.deadline.isUnset(), "Swap: listing already exists");

        listing.seller = msg.sender;
        listing.token = token1;
        listing.amount = amount;
        listing.price = price;
        // TODO deadline expiration params is a block number or duration ?
        listing.deadline.setDeadline(expiration);

        emit TokenListed(msg.sender, token0, token1, expiration, listing.price, listing.amount);

        return true;
    }

    /**
     * @dev trigger minting and locking of listed token under a defined amount of token
     *
     * May emit a {Commit} event
     */
    function commit(address token, uint256 amount) external returns (bool) {
        Listing storage listing = _listings[token];
        require(listing.deadline.isStarted(), "Swap: listing does not exist");
        require(!listing.deadline.isExpired(), "Swap: listing is expired");
        require(listing.amount >= amount, "Swap: not enough token left");

        unchecked {
            listing.amount -= amount;
        }

        IToken(token).mint(msg.sender, amount);
        IToken(token).lockTokens(msg.sender, amount);

        emit Commitment(token, msg.sender, amount);

        return true;
    }

    /**
     * @dev capital has to be called before a payment can be made by investors
     *
     * May emit a {CapitalCalled} event
     */
    function callCapital(address token, uint256 amount, uint64 deadline) external returns (uint256) {
        Listing storage listing = _listings[token];
        require(listing.deadline.isStarted(), "Swap: listing does not exist");
        require(listing.deadline.isExpired(), "Swap: listing still in subscription period");
        require((listing.seller == msg.sender) || (owner() == msg.sender), "Swap: caller not authorized");
        // TODO implement owner of the contract (or delegate of the token)
        require(amount > 0, "Swap: call amount is zero");

        // TODO CallId can be unique with nonces++ per token
        uint256 callId = uint256(keccak256(abi.encode(token, block.number, amount, deadline)));
        CapitalCall storage call = _capitalCalls[callId];
        call.token = token;
        call.amount = amount;
        call.deadline.setDeadline(deadline);

        emit CapitalCalled(token, callId, amount, deadline);

        return callId;
    }

    /**
     * @dev Investor transfer token to the seller address as payment following a capital call
     *
     * May emit a {Payment} event.
     */
    function pay(
        uint256 callId,
        uint256 amount1,
        uint256 deadline,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) external returns (bool) {
        CapitalCall storage call = _capitalCalls[callId];
        Listing storage listing = _listings[call.token];
        require(call.amount > 0, "Swap: call does not exists");
        require(amount1 <= call.amount, "Swap: payment will exceed total called amount");
        // TODO check the correct amount to be paid by investor
        unchecked {
            call.amount -= amount1;
        }

        IERC20Permit(listing.token).permit(msg.sender, address(this), amount1, deadline, v, r, s);
        bool success = IERC20(listing.token).transferFrom(msg.sender, listing.seller, amount1);
        require(success, "Swap: payment has failed");

        uint256 amount0 = cost0(call.token, listing.token, amount1, listing.price);
        IToken(call.token).unlockTokens(msg.sender, amount0);

        emit Payment(call.token, msg.sender, listing.token, amount1);

        return true;
    }

    function cost1(address token0, address token1, uint256 amount0, uint64 price) public view returns (uint256) {
        uint8 dec0 = IERC20Metadata(token0).decimals();
        uint8 dec1 = IERC20Metadata(token1).decimals();
        if (dec0 >= dec1) {
            return (amount0 * price) / (10 ** (dec0 - dec1));
        } else {
            return (amount0 * price) * (10 ** (dec1 - dec0));
        }
    }

    function cost0(address token0, address token1, uint256 amount1, uint64 price) public view returns (uint256) {
        uint8 dec0 = IERC20Metadata(token0).decimals();
        uint8 dec1 = IERC20Metadata(token1).decimals();
        if (dec0 >= dec1) {
            return (amount1 / price) * (10 ** (dec0 - dec1));
        } else {
            return (amount1 / price) / (10 ** (dec1 - dec0));
        }
    }

    /**
     * @dev Allow an seller address to create listing of a token.
     *
     * May emit a {Allowed} event.
     */
    function allow(address token, address seller) external {
        require(seller != address(0), "Swap: address zero not allowed");
        // TODO require token has the correct interface
        if (!isWhitelisted(token, seller)) {
            _whitelist[token] = seller;
            emit Allowed(token, seller);
        }
    }

    /**
     * @dev Remove an address from being authorised to sell this token.
     *
     * Emits a {Revoked} event.
     */
    function revoke(address token, address seller) external {
        delete _whitelist[token];

        emit Revoked(token, seller);
    }

    /**
     * @dev Check if address is authorised to create listing for the token
     */
    function isWhitelisted(address token, address seller) public view returns (bool) {
        return _whitelist[token] == seller;
    }
}

