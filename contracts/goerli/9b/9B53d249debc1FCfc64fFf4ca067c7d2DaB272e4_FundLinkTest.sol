import "@openzeppelin/contracts/access/Ownable.sol";
//  Interfaces
import "../interfaces/IFundLINKSubscription.sol";

abstract contract FundLINKSubscription is IFundLINKSubscription, Ownable {
    ISwapRouter public immutable SWAP_ROUTER;

    address public immutable CHAIN_LINK_TOKEN;
    address public immutable WETH_TOKEN;
    uint64 public immutable SUBSCRIPTION_ID;
    address public immutable VRF_COORDINATOR;

    uint8 private _balanceSplitAmount = 2; //50%

    uint256 private _LinkBalance;
    uint256 private _WethBalance;
    uint24 private _feeTier = 3000;

    constructor(
        ISwapRouter routerAddress_,
        address chainLinkToken_,
        address wethToken_,
        uint64 VRFsubscriptionId_,
        address VRFCoordinator_
    ) {
        SWAP_ROUTER = routerAddress_;
        CHAIN_LINK_TOKEN = chainLinkToken_;
        WETH_TOKEN = wethToken_;
        SUBSCRIPTION_ID = VRFsubscriptionId_;
        VRF_COORDINATOR = VRFCoordinator_;
    }

    function _exchangeAllEthAndFund() internal {
        uint256 amountOfEth = address(this).balance / _getBalanceSplitAmount();
        uint256 recivedLink = _swapEthForLink(amountOfEth);

        bool sucsess = _fundSubscription(recivedLink);

        if (!sucsess) revert FundLinkContractFailed();

        emit SubscriptionFunded(recivedLink, amountOfEth, _getSubscriptionId());
    }

    function _exchangeEthAmountAndFund(uint256 amount_) internal {
        uint256 recivedLink = _swapEthForLink(amount_);

        bool sucsess = _fundSubscription(recivedLink);

        if (!sucsess) revert FundLinkContractFailed();

        emit SubscriptionFunded(recivedLink, amount_, _getSubscriptionId());
    }

    function _swapEthForWeth(uint256 amountOfETH_) internal {}

    function _swapEthForLink(uint256 amountOfETH_)
        internal
        returns (uint256 recivedLink)
    {
        require(
            amountOfETH_ >= address(this).balance,
            "Balance To Low for that amount"
        );

        ISwapRouter.ExactInputSingleParams memory params = ISwapRouter
            .ExactInputSingleParams(
                WETH_TOKEN,
                CHAIN_LINK_TOKEN,
                _feeTier,
                address(this),
                block.timestamp + 50,
                amountOfETH_,
                1,
                0
            );

        recivedLink = SWAP_ROUTER.exactInputSingle{value: amountOfETH_}(params);

        if (recivedLink < 1) revert SwapEthForLinkFailed();

        _LinkBalance = _LinkBalance + recivedLink;
        emit SwapMade(amountOfETH_, recivedLink);
        return recivedLink;
    }

    function _fundSubscription(uint256 amountOfLink_) internal returns (bool) {}

    function _setFeeTier(uint24 newFeeTier_) internal {
        _feeTier = newFeeTier_;
    }

    function _getLinkBalance() internal view returns (uint256) {
        return _LinkBalance;
    }

    function _getWethBalance() internal view returns (uint256) {}

    function _getBalanceSplitAmount() internal view returns (uint8) {
        return _balanceSplitAmount;
    }

    function _getSubscriptionId() internal view returns (uint64) {
        return SUBSCRIPTION_ID;
    }

    function _addEthBalance(uint256 toAdd_) internal {
        _WethBalance + _WethBalance + toAdd_;
    }

    function _subEthBalance(uint256 toSub_) internal {
        _WethBalance = _WethBalance - toSub_;
    }

    function _addLinkBalance(uint256 toAdd_) internal {
        _LinkBalance + _LinkBalance + toAdd_;
    }

    function _subLinkBalance(uint256 toSub_) internal {
        _LinkBalance = _LinkBalance - toSub_;
    }
}

