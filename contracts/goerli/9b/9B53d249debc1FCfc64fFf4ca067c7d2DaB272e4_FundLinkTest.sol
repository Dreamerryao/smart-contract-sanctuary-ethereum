pragma solidity ^0.8.7;

import "./utils/fundLINKSubscription.sol";
import "./utils/tokenIO.sol";

contract FundLinkTest is FundLINKSubscription, TokenIO {
    constructor(
        address routerAddress_,
        address chainLinkToken_,
        address wethToken_,
        uint64 VRFsubscriptionId_,
        address VRFCoordinator_
    )
        FundLINKSubscription(
            ISwapRouter(routerAddress_),
            chainLinkToken_,
            wethToken_,
            VRFsubscriptionId_,
            VRFCoordinator_
        )
    {}

    error FunctionNotInUse();

    function exchangeAllEthAndFund() public override onlyOwner {
        _exchangeAllEthAndFund();
    }

    function exchangeEthAmountAndFund(uint256 amount_)
        public
        override
        onlyOwner
    {
        _exchangeEthAmountAndFund(amount_);
    }

    receive() external payable override(IFundLINKSubscription, TokenIO) {
        emit receivedETH(msg.sender, msg.value);
    }

    function removeETH(address payable to_, uint256 amount_)
        public
        override
        onlyOwner
    {
        payable(to_).transfer(amount_);
    }

    function fundWithLink(uint256 linkAmount_) public override {
        require(
            linkAmount_ < _getLinkBalance(),
            "Contract Link Balance Too low"
        );
    }

    /**
     *      Unused Functions
     */
    function removeERC20(
        address contract_,
        address payable to_,
        uint256 amount_
    ) public override onlyOwner {
        revert FunctionNotInUse();
    }

    function removeERC721(
        address contract_,
        address to_,
        uint256 id_
    ) public override onlyOwner {
        revert FunctionNotInUse();
    }

    function removeERC1155(
        address contract_,
        address to_,
        uint256 id_,
        uint256 amount_
    ) public override onlyOwner {
        revert FunctionNotInUse();
    }
}

