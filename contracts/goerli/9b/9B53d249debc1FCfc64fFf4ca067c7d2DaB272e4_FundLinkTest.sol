pragma solidity ^0.8.7;
//  Interfaces
import "../interfaces/ITokenIO.sol";
//  Interaction Contracts
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";

abstract contract TokenIO is ITokenIO {
    function _removeETH(address payable to_, uint256 amount_) internal {
        require(address(this).balance >= amount_, "Not enough ETH in contract");
        to_.transfer(amount_);
        emit removedETH(to_, amount_);
    }

    function _removeERC20(
        address contract_,
        address payable to_,
        uint256 amount_
    ) internal {
        IERC20 _tokenAddress = IERC20(contract_);
        bool success = _tokenAddress.transfer(to_, amount_);
        require(success, "removeERC20: Could not withdraw");
        emit removedERC20(to_, contract_, amount_);
    }

    function _removeERC721(
        address contract_,
        address to_,
        uint256 id_
    ) internal {
        address _thisContract = address(this);
        IERC721(contract_).transferFrom(_thisContract, to_, id_);
        emit removedERC721(to_, contract_, id_);
    }

    function _removeERC1155(
        address contract_,
        address to_,
        uint256 id_,
        uint256 amount_
    ) internal {
        address _thisContract = address(this);
        bytes memory data;
        IERC1155(contract_).safeTransferFrom(
            _thisContract,
            to_,
            id_,
            amount_,
            data
        );
        emit removedERC1155(to_, contract_, id_, amount_);
    }

    receive() external payable virtual {
        emit receivedETH(msg.sender, msg.value);
    }
}

