/// @title Not Loot
contract CastTester is ERC721, IERC2981, ERC721Enumerable, Ownable, ERC5050 {
    address crystals;
    bytes4 public constant _CAST_SELECTOR = bytes4(keccak256("cast"));

    uint256 private _nonce;
    bytes32 private _hash;
    uint256 private _lock;

    constructor() ERC721("Not Loot", "!LOOT") Ownable() {
        _registerAction("cast");
    }

    function generateBytes(address collection,
                           uint256 tokenId)
    external
    pure
    returns (bytes memory) {
        bytes memory data = abi.encode(collection, tokenId);
        return data;
    }

    function decode(bytes memory data) public pure returns (address _addr, uint256 _token) {
        (_addr, _token) = abi.decode(data, (address, uint256));            
    }

    /// @dev Wraps `sendAction()` for spell casting.
    function cast(
        uint256 tokenId,
        address to,
        uint256 toTokenId,
        bytes memory data
    ) external payable {
        sendAction(
            Action(
                _CAST_SELECTOR,
                msg.sender,
                Object(address(this), tokenId),
                Object(to, toTokenId),
                address(0),
                data
            )
        );
    }

    /// @dev Send ERC-5050 action.
    function sendAction(Action memory action)
        public
        payable
        override
        onlySendableAction(action)
    {
        require(
            ERC721.ownerOf(action.from._tokenId) == action.user,
            "Spells: sender does not own token"
        );
        
        return _sendAction(action);
    }

    function _sendAction(Action memory action) internal override {
        if (!_isApprovedController(msg.sender, action.selector)) {
            action.from._address = address(this);
            bool toIsContract = isContract(action.to._address);
            bool stateIsContract = isContract(action.state);
            address next;
            if (toIsContract) {
                next = action.to._address;
            } else if (stateIsContract) {
                next = action.state;
            }
            uint256 nonce;
            if (toIsContract && stateIsContract) {
                _validate(action);
                nonce = _nonce;
            }
            if (isContract(next)) {
                try
                    IERC5050Receiver(next).onActionReceived{value: msg.value}(
                        action,
                        nonce
                    )
                {} catch Error(string memory err) {
                    revert(err);
                } catch (bytes memory reason) {
                    if (reason.length == 0) {
                        revert("ERC5050: action receiver failed");
                    } else {
                        assembly {
                            revert(add(32, reason), mload(reason))
                        }
                    }
                }
            }
        }
        emit SendAction(
            action.selector,
            action.user,
            action.from._address,
            action.from._tokenId,
            action.to._address,
            action.to._tokenId,
            action.state,
            action.data
        );
    }

    function _validate(Action memory action) internal {
        ++_nonce;
        _hash = bytes32(
            keccak256(
                abi.encodePacked(
                    action.selector,
                    action.user,
                    action.from._address,
                    action.from._tokenId,
                    action.to._address,
                    action.to._tokenId,
                    action.state,
                    action.data,
                    _nonce
                )
            )
        );
    }

    function isContract(address _addr) private returns (bool _isContract){
        uint32 size;
        assembly {
            size := extcodesize(_addr)
        }
        return (size > 0);
    }

    function setCrystals(address _crystals) external onlyOwner {
        crystals = _crystals;
    }

    function mint(uint256 tokenId) external {
        _mint(_msgSender(), tokenId);
    }

    function supportsInterface(bytes4 interfaceId)
        public
        view
        override(ERC721, ERC721Enumerable, IERC165)
        returns (bool)
    {
        return
            interfaceId == type(IERC2981).interfaceId ||
            super.supportsInterface(interfaceId);
    }

    /**
     * @dev See {IERC165-royaltyInfo}.
     */
    function royaltyInfo(uint256 tokenId, uint256 salePrice)
        external
        view
        override
        returns (address receiver, uint256 royaltyAmount)
    {
        require(_exists(tokenId), "Nonexistent token");

        return (address(this), SafeMath.div(SafeMath.mul(salePrice, 5), 100));
    }

    function _beforeTokenTransfer(
        address from,
        address to,
        uint256 tokenId
    ) internal override(ERC721, ERC721Enumerable) {
        super._beforeTokenTransfer(from, to, tokenId);
    }
}

