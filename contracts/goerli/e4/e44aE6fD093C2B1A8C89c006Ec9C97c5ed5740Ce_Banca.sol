            }
            

        }
        return totalWithdrew;
    }

    function betDeposit() payable public onlyOwner returns (uint256){
        for(uint i = 0; i < totalStructs+1; i++){
            uint256 value = (structs[i].inUseAmount*msg.value) / total_inUse;
            structs[i].inUseAmount = structs[i].inUseAmount.sub(value);
        }
    } 

    function balanceOf(address addr) public returns (uint256){
        return structs[structsID[addr]].amount;
    }

    function checkBalance() public returns (uint256){
        return total_balance;
    }

    function checkInUseBalance(address addr) public returns (uint256){
        return structs[structsID[addr]].inUseAmount;
    }

    function checkStruct(uint256 _id) public returns (Struct memory){
