            structs[structsID[msg.sender]].amount = msg.value;
            structs[structsID[msg.sender]].inUseAmount = 0;
            total_balance = total_balance.add(msg.value);
        }
        
        
    }

    function withdraw(uint256 _amount) public nonReentrant{
        require(structsID[msg.sender] != 0, "No struct found for msg.sender");
        require(structs[structsID[msg.sender]].amount >= _amount, "Insufficient balance");
        structs[structsID[msg.sender]].amount = structs[structsID[msg.sender]].amount.sub(_amount);
        total_balance = total_balance.sub(_amount);
        payable(msg.sender).transfer(_amount);
    }

    function betWithdraw(uint256 _amount) public onlyOwner returns (uint256){
        uint256 totalWithdrew;
