pragma solidity 0.8.2;


contract StakingContract is Ownable {
    
    using SafeMath for uint256;
    
    IERC20 public uniswaptoken;
    
    struct Lpstake {
        address teamAddress;
        uint256 stakeAmount;
        uint256 createStakeTime;
        uint256 gameEndTime;
        bool stacked;
        
    }
    
    string private _secretPlatformKey;
    address private adminWallet;
    address[] private stakedAddress;
    mapping(address => uint256) private poolTotalStakeAmount;
    mapping(address => Lpstake) private userStakeInfo;
    
    constructor(address admin, string memory secretKey) public {
        _secretPlatformKey = secretKey;
        adminWallet = admin;
    }
    
    //update secretKey
    function updateSecretKey (string memory newSecretyKey) external onlyOwner returns(bool) {
        _secretPlatformKey = newSecretyKey;
        return true;
    }
    
    //stake lp tokens
    function stakeLpTokens(address _uniswapTokenAddress, uint256 amount, uint256 gameEndTime, string memory secretKey)external returns(bool){
        require(keccak256(bytes(_secretPlatformKey)) == keccak256(bytes(secretKey)), "Anrx: Bad Request From External");
        if(userStakeInfo[msg.sender].stacked){
            uniswaptoken = IERC20(_uniswapTokenAddress);
            uniswaptoken.transferFrom(msg.sender, address(this), amount);
            userStakeInfo[msg.sender].stakeAmount = userStakeInfo[msg.sender].stakeAmount.add(amount);
            poolTotalStakeAmount[_uniswapTokenAddress] = poolTotalStakeAmount[_uniswapTokenAddress].add(amount);
            return true;
        }
        stakedAddress.push(msg.sender);
        uniswaptoken = IERC20(_uniswapTokenAddress);
        uniswaptoken.transferFrom(msg.sender, address(this), amount);
        
        Lpstake memory newStake = Lpstake({
                teamAddress: _uniswapTokenAddress,
                stakeAmount: amount,
                createStakeTime: block.timestamp,
                gameEndTime: gameEndTime,
                stacked: true
                
        });
        userStakeInfo[msg.sender] = newStake;
        poolTotalStakeAmount[_uniswapTokenAddress] = poolTotalStakeAmount[_uniswapTokenAddress].add(amount);
        
        return true;
    }
    
    //unstaking tokens
    function unstakeLpTokens(string memory secretKey) external returns(bool){
        require(keccak256(bytes(_secretPlatformKey)) == keccak256(bytes(secretKey)), "Anrx: Bad Request From External");
        require(userStakeInfo[msg.sender].stacked, "Error: No token stack found");
        uint256 gameEndTime = userStakeInfo[msg.sender].gameEndTime;
        address poolAddress = userStakeInfo[msg.sender].teamAddress;
        uniswaptoken = IERC20(poolAddress);
        uint256 amount = userStakeInfo[msg.sender].stakeAmount;
        poolTotalStakeAmount[poolAddress] = poolTotalStakeAmount[poolAddress].sub(amount);
        if(block.timestamp > gameEndTime){
            uniswaptoken.transfer(msg.sender, amount);
            delete userStakeInfo[msg.sender];
            return true;
        }
        uint256 fees = amount.div(100);
        uint256 refundAmount = amount.sub(fees);
        uniswaptoken.transfer(adminWallet, fees);
        uniswaptoken.transfer(msg.sender, refundAmount);
        delete userStakeInfo[msg.sender];
        return true;
    }
    
    
    function getUserStakeInfo() public view returns(Lpstake memory){
        return userStakeInfo[msg.sender];
    }
    
    function unstakeAll()external onlyOwner returns(bool){
        for(uint i=0; i< stakedAddress.length; i++){
            uint256 amount = userStakeInfo[stakedAddress[i]].stakeAmount;
            address poolAddress = userStakeInfo[stakedAddress[i]].teamAddress;
            uniswaptoken.transfer(stakedAddress[i], amount);
            poolTotalStakeAmount[poolAddress] = poolTotalStakeAmount[poolAddress].sub(amount);
            delete userStakeInfo[stakedAddress[i]];    
        }
        delete stakedAddress;
        return true;
    }
    
    // fetch total stake in poolAddress
    function fetchTotalPoolStakeAmount(address poolAddress)external view returns(uint256){
        return poolTotalStakeAmount[poolAddress];
    }
    
    function reStakeAmount(uint256 newGameTime, string memory secretKey) external returns(uint256){
        require(keccak256(bytes(_secretPlatformKey)) == keccak256(bytes(secretKey)), "Anrx: Bad Request From External");
        userStakeInfo[msg.sender].gameEndTime = newGameTime;
        return newGameTime;
    }
}