        uint256 fireRate;
        uint256 range;
        uint256 accuracy;
        uint256 stability;
        uint256 clipSize;
        uint256 scopeType;
        uint256 damageType;
    }
    mapping(uint256 => GunStats) public gunStatsMap;
    uint256 public gunMintCostInPairToken;
    mapping(uint256 => address) public gunCreatorMap;
    uint256 public maxNumberOfGunCreationsPerPioneer;
    mapping(uint256 => uint256) public gunsMadePerPioneerMap;

    string[] public scopes = ["Red Dot", "ACOG", "Sniper"];
    string[] public damageTypes = ["Kinetic", "Explosive", "Cryo", "Dark Matter", "Corrosive", "Electric"];

    /**
    * @dev Initializes the proxy contract
    */
    constructor(
            address PioneerContractInit,
            address KITSContractInit,
            address UniswapPoolContractInit,
            string memory contractName
        )
        ERC1155(contractName)
    {
        KITSContract = KITSContractInit;
        PioneerContract = PioneerContractInit;
        UniswapPoolContract = UniswapPoolContractInit;
        _pause();

        // two weeks in seconds
        historyInSecondsForTWAP = 1209600;
        maxNumberOfFreeItemsForEachPioneer = 1;
        maxNumberOfGunCreationsPerPioneer = 1;
        maxNumberOfItems = 20;
    }

    /**
    * @dev Change the uniswap pool contract that is used to determine prices
    * @param newPool new Uniswap pool to use as token pair
    */
    function changeUniswapPoolContract(address newPool) public onlyOwner{
        UniswapPoolContract = newPool;
    }

    /**
    * @dev Calculates the total gun stats points allocated across the different stats
    * @param stats Gun stats to calculate sum for
    */
    function calcPointsSpent(GunStats memory stats) private pure returns (uint256 sum) {
        sum = stats.damage + stats.fireRate + stats.range + stats.accuracy + stats.stability + stats.clipSize;
        if (stats.scopeType > 0){
            sum += 5;
        }
        if (stats.damageType > 0){
            sum += 5;
        }
        return sum;
    }

    /**
    * @dev Check that the caller owns the pioneer 
    * @param pioneerTokenId The token id of the Pioneer NFT
    */
    function checkSenderOwnsPioneer(uint256 pioneerTokenId) private view {
        address pioneerOwner = IERC721(PioneerContract).ownerOf(pioneerTokenId);
        require(msg.sender == pioneerOwner, "Must own Pioneer to claim");
    }

    /**
    * @dev Add a gun to the store 
    * @param pioneerTokenId The token id of the Pioneer NFT
    * @param newGunStats Stats for the new gun being created
    */
    function addGun(uint256 pioneerTokenId, GunStats memory newGunStats) public nonReentrant whenNotPaused{
        checkSenderOwnsPioneer(pioneerTokenId);
        ++gunsMadePerPioneerMap[pioneerTokenId];
        require(gunsMadePerPioneerMap[pioneerTokenId] <= maxNumberOfGunCreationsPerPioneer, "Pioneer cannot create more guns");

        uint256 pointsSpent = calcPointsSpent(newGunStats);
        require(pointsSpent == 100, string.concat("Must spend 100 points. Only spent ", Strings.toString(pointsSpent)));
        require(numberOfItems < maxNumberOfItems, "Cannot create more guns");
        require(newGunStats.scopeType < scopes.length, "Pick an existing scope");
        require(newGunStats.damageType < damageTypes.length, "Pick an existing damage type");
        gunCreatorMap[numberOfItems] = msg.sender;
        GunStats storage gunStats = gunStatsMap[numberOfItems];
        gunStats.damage = newGunStats.damage;
        gunStats.fireRate = newGunStats.fireRate;
        gunStats.range = newGunStats.range;
        gunStats.accuracy = newGunStats.accuracy;
        gunStats.stability = newGunStats.stability;
        gunStats.clipSize = newGunStats.clipSize;
        gunStats.scopeType = newGunStats.scopeType;
        gunStats.damageType = newGunStats.damageType;
        emit GunCreated(msg.sender, numberOfItems);
        ++numberOfItems;
    }

    /**
    * @dev Changes the max number of guns that can be created per pioneer
    * @param newMax The new max number
    */
    function changeMaxGunCreationsPerPioneer(uint256 newMax) public onlyOwner{
        maxNumberOfGunCreationsPerPioneer = newMax;
    }

    /**
    * @dev Gets the number of guns left to be created with a pioneer token id
    * @param pioneerTokenId The token id of the Pioneer NFT
    */
    function numberOfGunsThatCanBeCreated(uint256 pioneerTokenId) public view returns(uint256){
        return maxNumberOfGunCreationsPerPioneer - gunsMadePerPioneerMap[pioneerTokenId];
    }

    /**
    * @dev Changes the max number of items that can be minted
    * @param newMax The new max number
    */
    function changeMaxItems(uint256 newMax) public onlyOwner {
        require(newMax >= numberOfItems, "Must be > current items");
        maxNumberOfItems = newMax;
    }

    /**
    * @dev Changes the gun mint cost in token paired erc20
    * @param newGunMintCostInPairToken The new mint cost in native pair tokens for all guns
    */
    function changeGunMintCost(uint256 newGunMintCostInPairToken) public onlyOwner {
        gunMintCostInPairToken = newGunMintCostInPairToken;
    }

    /**
    * @dev Change the max free item mints for Pioneer token holders
    * @param newMax The new max number
    */
    function changeMaxFreeMintsForPioneers(uint256 newMax) public onlyOwner{
        maxNumberOfFreeItemsForEachPioneer = newMax;
    }

    /**
    * @dev Toggle whether this contract is paused
    */
    function togglePause() public onlyOwner{
        if (paused()){
            _unpause();
        }
        else{
            _pause();
        }
    }

    /**
    * @dev Change the time range in seconds used for TWAP calculations
    * @param twapRangeInSeconds Time weighted average price duration in seconds over which to average
    */
    function changeTwapRangeInSeconds(uint32 twapRangeInSeconds) public onlyOwner{
        historyInSecondsForTWAP = twapRangeInSeconds;
    }

    /**
    * @dev Returns number of KITS per pair token
    * @return kitsPerPairToken kits per pair token in fixed point value with 1e18 precision
    */
    function getKitsPerPairToken() public view returns (uint256 kitsPerPairToken) {
        (int24 arithmeticMeanTick,) = OracleLibrary.consult(UniswapPoolContract, historyInSecondsForTWAP);
        uint160 sqrtPriceX96 = TickMath.getSqrtRatioAtTick(arithmeticMeanTick);
        
        // this prevents overflow and underflow for token pairs with varying decimals and valuations
        return (uint256(sqrtPriceX96) >> 56) * (uint256(sqrtPriceX96) >> 56) * 1e18 >> 80;
    }

    /**
    * @dev Changes the address that receives mint royalties
    * @param tokenId Gun token id
    * @param newAddr Address that will receive royalties from now on
    */
    function changeRoyaltyAddress(uint256 tokenId, address newAddr) public nonReentrant {
        require(gunCreatorMap[tokenId] == msg.sender, "Only the creator can change");
        gunCreatorMap[tokenId] = newAddr;
    }

    /**
    * @dev Mints a number of items of one token id
    * @param itemId token id of item to mint
    * @param numberToMint number of this item type to mint
    */
    function mintItem(uint256 itemId, uint256 numberToMint) public nonReentrant whenNotPaused{
        require(itemId < numberOfItems, "Item not created yet");

        //burn the KITS and send royalty to gun creator
        uint256 costInKITS = (gunMintCostInPairToken * getKitsPerPairToken() * numberToMint)  / (1e18);
        uint256 creatorRoyalty = costInKITS * 20 / 100;
        uint256 amountToBurn = costInKITS - creatorRoyalty;
        IERC20(KITSContract).transferFrom(msg.sender, address(this), amountToBurn);
        IERC20(KITSContract).transferFrom(msg.sender, gunCreatorMap[itemId], creatorRoyalty);

        //mint items to caller
        bytes memory data;
        _mint(msg.sender, itemId, numberToMint, data);
        emit GunMinted(msg.sender, itemId, gunCreatorMap[itemId], amountToBurn, creatorRoyalty);
    }

    /**
    * @dev Claim free items for Pioneer token holders
    * @param pioneerTokenId pioneer token id that is claiming
    * @param itemIds token ids of items to claim
    */
    function claimFreeItems(uint256 pioneerTokenId, uint256[] memory itemIds) public nonReentrant whenNotPaused{
        checkSenderOwnsPioneer(pioneerTokenId);
        
        uint256 numItemsAlreadyClaimed = pioneerLootClaimed[pioneerTokenId];
        uint256 numMintedTotalAfter = numItemsAlreadyClaimed + itemIds.length;
        require(numMintedTotalAfter < maxNumberOfFreeItemsForEachPioneer, "Cannot claim more");

        for (uint i = 0; i < itemIds.length; ++i){
            //mint items to caller
            bytes memory data;
            _mint(msg.sender, itemIds[i], 1, data);
        }
        pioneerLootClaimed[pioneerTokenId] = numMintedTotalAfter;
        emit FreeItemClaimed(pioneerTokenId, itemIds);
    }

    /**
    * @dev Generates an svg for the gun using on-chain data
    * @param tokenId Token id for the gun 
    */
    function generateGunSvg(uint256 tokenId) public view returns(string memory){
        bytes memory svg = abi.encodePacked(
            "<svg xmlns='http://www.w3.org/2000/svg' preserveAspectRatio='xMinYMin meet' viewBox='0 0 350 350'>",
            "<style>.base { fill: white; font-family: serif; font-size: 14px; }</style>",
            "<rect width='100%' height='100%' fill='black' />",
            "<text x='10%' y='10%' class='base'>", 
            "Damage: ", Strings.toString(gunStatsMap[tokenId].damage),
            "</text>",
            "<text x='10%' y='20%' class='base'>",
            "Fire Rate: ", Strings.toString(gunStatsMap[tokenId].fireRate),
            "</text>",
            "<text x='10%' y='30%' class='base'>",
            "Range: ", Strings.toString(gunStatsMap[tokenId].range),
            "</text>",
            "<text x='10%' y='40%' class='base'>",
            "Accuracy: ", Strings.toString(gunStatsMap[tokenId].accuracy),
            "</text>",
            "<text x='10%' y='50%' class='base'>",
            "Stability: ", Strings.toString(gunStatsMap[tokenId].stability),
            "</text>",
            "<text x='10%' y='60%' class='base'>",
            "Clip Size: ", Strings.toString(gunStatsMap[tokenId].clipSize),
            "</text>",
            "<text x='10%' y='70%' class='base'>",
            "Scope Type: ", scopes[gunStatsMap[tokenId].scopeType],
            "</text>",
            "<text x='10%' y='80%' class='base'>",
            "Damage Type: ", damageTypes[gunStatsMap[tokenId].damageType],
            "</text>",
            "</svg>"
        );
        return string(
            abi.encodePacked(
                "data:image/svg+xml;base64,",
                Base64.encode(svg)
            )    
        );
    }

    /**
    * @dev Generates token uris from on-chain data
    * @param tokenId Token id for the gun 
    */
    function uri(uint256 tokenId) public view override returns (string memory){
        bytes memory dataURI = abi.encodePacked(
            "{",
                "'name': 'Gun #", Strings.toString(tokenId), "',",
                "'description': 'Kosium gun',",
                "'creator': '", Strings.toHexString(gunCreatorMap[tokenId]), "',",
                "'image': '", generateGunSvg(tokenId), "'",
            "}"
        );
        return string(
            abi.encodePacked(
                "data:application/json;base64,",
                Base64.encode(dataURI)
            )
        );
    }
}

