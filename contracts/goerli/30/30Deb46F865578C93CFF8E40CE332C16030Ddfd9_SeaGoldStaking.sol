contract SeaGoldStaking is Ownable, ReentrancyGuard {
    using SafeMath for uint256;

    struct User {
        uint256 amount;
        uint256 date;
    }

    mapping(address => User) public userStake;

    uint256 public totalamountStaked;

    function receiveamount(address _userAddress, uint256 _unstake)
        public
        view
        returns (uint256)
    {
        User storage user = userStake[_userAddress];
        uint256 UserShare = 0;
        if (user.amount > 0) {
            uint256 amountForDistribution = IERC20(0xD9D2a77508097de682406dD7B528881591e7bF36).balanceOf(address(this)) - totalamountStaked;
            UserShare =
                (amountForDistribution / 100) *
                ((_unstake * 100) / totalamountStaked);
        }
        return UserShare;
    }

    function stake(uint256 amount) public nonReentrant {
        User storage user = userStake[msg.sender];
        require(
            (user.amount + amount) >= 10000 * 1e18,
            "Minimum 10000"
        );
        require(
            (user.amount + amount) <= 21 * 10**11 * 1e18,
            "Maximum 2,100,000,000,000"
        );
        uint256 allowance = IERC20(0xD9D2a77508097de682406dD7B528881591e7bF36).allowance(msg.sender, address(this));
        uint256 balance = IERC20(0xD9D2a77508097de682406dD7B528881591e7bF36).balanceOf(msg.sender);
        require(allowance >= amount, "Insufficient allowance");
        require(balance >= amount, "Insufficient balance");
        IERC20(0xD9D2a77508097de682406dD7B528881591e7bF36).transferFrom(msg.sender, address(this), amount);
        user.date = block.timestamp;
        user.amount = user.amount + amount;
        totalamountStaked = totalamountStaked + amount;
    }

    function unstake(uint256 _amount) public nonReentrant {
        User storage user = userStake[msg.sender];
        require(
            block.timestamp > ((30 * 86400) + user.date),
            "Minimum period not complete"
        );
        require(user.amount > 0, "Need Amount > 0");
        require(
            _amount <= user.amount,
            "Amount is > your Stake"
        );
        require(
            user.amount - _amount == 0 ||
                user.amount - _amount >= 10000 * 1e18,
            "Please check amount"
        );
        uint256 balance = IERC20(0xD9D2a77508097de682406dD7B528881591e7bF36).balanceOf(address(this));
        uint256 userShare = receiveamount(msg.sender, _amount);
        require(
            balance >= _amount + userShare,
            "Insufficent balance"
        );
        totalamountStaked = totalamountStaked - _amount;
        if (_amount == user.amount) {
            delete userStake[msg.sender];
        } else {
            user.amount = user.amount - _amount;
        }
        IERC20(0xD9D2a77508097de682406dD7B528881591e7bF36).transfer(msg.sender, _amount + userShare);
    }
}