    emit StakingStarted();
  }

  /**
   * @dev Abort the staking if the minimimum stake was not collected and the collection period ended.
   */

  function abortStaking() external onlyOwner {
    require(totalAmountStaked < minTotalAmount, 'Minimum stake amount already collected');
    require(block.timestamp > collectionEnd, 'Collection not ended yet');

    uint256 stakersLength = stakers.length();
    for (uint256 i = 0; i < stakersLength; i++) {
      positions[stakers.at(i)][0].rewardDates.push(block.timestamp);
      positions[stakers.at(i)][0].amountRewards = 0;
    }

    _modifyStakingProposalAvailability(0, false);
    emit StakingClosed(block.timestamp);
  }

  /**
   * @dev Pay a reward of a user.
   */

  function payReward(uint256 positionsIndex, uint256 rewardIndex) external {
    require(positionsIndex == 0, 'positionsIndex parameter must be 0');
    _payReward(_msgSender(), 0, rewardIndex);
  }

  /**
   * @dev Get staked token back minus a penalty.
   */

  function earlyUnstake(uint256 positionsIndex) external {
    require(positionsIndex == 0, 'positionsIndex parameter must be 0');
    _earlyUnstake(_msgSender(), 0);
  }
