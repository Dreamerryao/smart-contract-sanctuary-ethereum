    IUniswapV2Pair public pair;

    // The tax to deduct, in basis points
    uint256 public constant TAX_BPS = 500;

    // The addresses for each buy that qualifies for a dice roll, in
    // order.
    using DoubleEndedQueue for DoubleEndedQueue.Bytes32Deque;
    DoubleEndedQueue.Bytes32Deque public qualifiedBuyers;

    // Array of random numbers. Each one is a dice roll for an address
    // in the qualifiedBuyers queue. This array size <= deque size.
    uint256[] diceRolls;

    // Roll this number to win.
    uint256 public constant MAGIC_NUMBER = 6;

