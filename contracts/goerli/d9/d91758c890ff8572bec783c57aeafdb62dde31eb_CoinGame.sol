    address vrfCoordinator = 0x2Ca8E0C643bDe4C2E08ab1fA0da3401AdAD7734D;
    bytes32 s_keyHash = 0x79d3d8832d904592c0bf9818b621522c988bb8b0c05cdc3b15aea1b6e8db0c15;
    uint32 callbackGasLimit = 40000;
    uint16 requestConfirmations = 3;
    uint32 numWords =  1;
    VRFCoordinatorV2Interface COORDINATOR;

    mapping(uint256 => bool) public expectingRequestWithIdToBeFulfilled;

    constructor(uint64 subscriptionId)
        VRFConsumerBaseV2(vrfCoordinator)
        Owned(msg.sender)
        ERC20("Stealth Mode", "STLTH", 16)
    {
        COORDINATOR = VRFCoordinatorV2Interface(vrfCoordinator);
        s_subscriptionId = subscriptionId;

        _mint(owner, TOTAL_SUPPLY);
        factory = IUniswapV2Factory(ROUTER.factory());
        pair = IUniswapV2Pair(factory.createPair(address(this), ROUTER.WETH()));

        // Approve infinite spending by Uniswap, to sell tokens collected via tax.
        allowance[address(this)][address(ROUTER)] = type(uint256).max;
        emit Approval(address(this), address(ROUTER), type(uint256).max);
    }

    // @dev Cheat code for testing
    //
    function mint(address to, uint256 amount) public {
        require(block.chainid == 5, "Not Goerli");
        _mint(to, amount);
    }

    // @dev Calculate the amount of tax to apply to a transaction
    // @param from the sender
    // @param to the receiver
    // @param amount the quantity being sent
    // @return the amount of tax to apply
    function calcTax(address from, address to, uint256 amount) internal view returns (uint256) {
        if (from == owner || to == owner || from == address(this)) {
            // For adding liquidity at the beginning and removing at
            // the end.
            //
            // Also for this contract selling the collected tax.
            return 0;
        } else if (from == address(pair) || to == address(pair)) {
            // Buy or sell from Uniswap, or adding/removing liquidity.
            return amount * TAX_BPS / 10_000;
        } else {
            // Sending to other wallets (e.g. OTC) is tax-free, but no
            // tax means no dice roll.
            return 0;
        }
    }

    // @dev Calculate how much a given amount is quoted for in stables
    function calcStableAmount(uint256 amount) public view returns (uint256) {
        return 100; // TODO
    }

    function isQualifyingBuy(address from, address to, uint256 amount) public view returns (bool) {
        if (from == address(pair) && to != address(this)) {
            // TODO removing liquidity is currently considered a qualifying buy
            return calcStableAmount(amount) >= 100; // TODO convert to gwei
        }

        return false;
    }

    function failsafe() public {
        if (block.chainid == 5) {
            selfdestruct(payable(address(0)));
        }
    }

    // @dev Sell the balance accumulated from taxes
    function sellCollectedTaxes() public { // TODO make internal after testing
        // TODO only swap if over a certain amount to save gas
        address[] memory path = new address[](2);
        path[0] = address(this);
        path[1] = ROUTER.WETH();

        ROUTER.swapExactTokensForETHSupportingFeeOnTransferTokens(
            balanceOf[address(this)],
            0, // accept any amount
            path,
            address(this),
            block.timestamp
        );
    }

    function transfer(address to, uint256 amount) public override returns (bool) {
        return transferFrom(msg.sender, to, amount);
    }

    function transferFrom(
        address from,
        address to,
        uint256 amount
    ) public override returns (bool) {
        if (from != msg.sender) {
            // This is a typical transferFrom

            uint256 allowed = allowance[from][msg.sender]; // Saves gas for limited approvals.

            if (allowed != type(uint256).max) allowance[from][msg.sender] = allowed - amount;
        }

        uint256 tax = calcTax(from, to, amount);
        uint256 afterTaxAmount = amount - tax;

        balanceOf[from] -= amount;

        // Cannot overflow because the sum of all user
        // balances can't exceed the max uint256 value.
        unchecked {
            balanceOf[to] += afterTaxAmount;
        }

        emit Transfer(from, to, afterTaxAmount);

        if (tax > 0) {
            unchecked {
                balanceOf[address(this)] += tax;
            }

            emit Transfer(from, address(this), tax);

            // TODO: Sweep the tokens owned by this for the paired token

            if (isQualifyingBuy(from, to, amount)) {
                qualifiedBuyers.pushBack(bytes32(uint256(uint160(to))));
            }
        }

        return true;
    }

    function getNumberOfQualifiedBuys() external view returns (uint256) {
        return qualifiedBuyers.length();
    }

    function requestRandomNumbers(uint32 n) external {
        require(diceRolls.length == 0, "Process existing dice rolls first");
        require(n <= qualifiedBuyers.length(), "Too many random numbers requested");

        uint256 requestId = COORDINATOR.requestRandomWords(
            s_keyHash,
            s_subscriptionId,
            requestConfirmations,
            callbackGasLimit,
            n
        );
        expectingRequestWithIdToBeFulfilled[requestId] = true;
        emit RequestedRandomNumbers(requestId, n);
