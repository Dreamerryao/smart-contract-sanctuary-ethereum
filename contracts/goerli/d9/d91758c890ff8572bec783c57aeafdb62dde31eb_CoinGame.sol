            if (diceRolls[i] % (MAGIC_NUMBER + 1) == MAGIC_NUMBER) {
                winner = payable(addr);
                emit Winner(winner);
                emit NumberOfDiceRollsProcessed(i + 1);
                return;
            }
        }

        emit NumberOfDiceRollsProcessed(n);
        delete diceRolls;
    }

