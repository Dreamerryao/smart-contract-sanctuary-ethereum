import '../embedded/Errors.sol';
import '../embedded/WadRayMath.sol';
import '../embedded/TimeValue.sol';

library ShortTermBondLogic {
    using SafeERC20Upgradeable for ERC20Upgradeable;
    using Scaling for uint256;
    using WadRayMath for uint256;

    function scaleToERC20Decimal(uint256 WADAmount, uint256 tokenDecimals) internal pure returns (uint256 ERC20Amount) {
        return WADAmount.scaleFromWad(tokenDecimals);
    }

    function scaleToWad(uint256 ERC20Amount, uint256 tokenDecimals) internal pure returns (uint256 WADAmount) {
        return ERC20Amount.scaleToWad(tokenDecimals);
    }

    function transferERC20From(
        address from,
        address to,
        address underlyingToken,
        uint256 amount
    ) internal {
        ERC20Upgradeable(underlyingToken).safeTransferFrom(from, to, amount);
    }

    function transferERC20(
        address to,
        address underlyingToken,
        uint256 amount
    ) internal {
        ERC20Upgradeable(underlyingToken).safeTransfer(to, amount);
    }

    function depositToTick(
        ShortTermBondDataTypes.Tick storage tick,
        uint256 amount,
        address underlyingToken,
        uint256 tokenDecimals
    ) external returns (uint256 scaledAmount) {
        if (amount == 0) {
            revert Errors.STB_ZERO_AMOUNT();
        }
        scaledAmount = scaleToWad(amount, tokenDecimals);
        tick.depositedAmount += scaledAmount;
        transferERC20From(msg.sender, address(this), underlyingToken, amount);
    }

    function updateTicksDeposit(
        ShortTermBondDataTypes.Tick storage currentTick,
        ShortTermBondDataTypes.Tick storage newTick,
        uint256 amount
    ) external {
        currentTick.depositedAmount -= amount;
        newTick.depositedAmount += amount;
    }

    function withdrawFromTick(
        ShortTermBondDataTypes.Tick storage tick,
        ShortTermBondDataTypes.PoolPhase issuancePhase,
        uint256 depositedAmount,
        bool didPartiallyWithdraw
    ) external returns (uint256 amountToWithdraw, bool partialWithdrawPartialFilledTick) {
        /// @dev The order of conditional statements in this function is relevant to the correctness of the logic
        if (issuancePhase == ShortTermBondDataTypes.PoolPhase.ISSUANCE) {
            revert Errors.STB_NO_WITHDRAWALS_ISSUANCE_PHASE();
        } else if (issuancePhase == ShortTermBondDataTypes.PoolPhase.BOOK_BUILDING) {
            amountToWithdraw = depositedAmount;
            tick.depositedAmount -= amountToWithdraw;
        } else if (
            !didPartiallyWithdraw &&
            tick.borrowedAmount > 0 &&
            tick.borrowedAmount < tick.depositedAmount &&
            (issuancePhase == ShortTermBondDataTypes.PoolPhase.ISSUED ||
                issuancePhase == ShortTermBondDataTypes.PoolPhase.DEFAULT)
        ) {
            // partial withdraw during borrow before repay
            amountToWithdraw = depositedAmount.wadDiv(tick.depositedAmount).wadMul(
                tick.depositedAmount - tick.borrowedAmount
            );
            partialWithdrawPartialFilledTick = true;
        } else if (tick.borrowedAmount == 0 && issuancePhase != ShortTermBondDataTypes.PoolPhase.CANCELLED) {
            // if tick was not matched
            amountToWithdraw = depositedAmount;
        } else if (
            (tick.depositedAmount == tick.borrowedAmount && tick.repayedAmount > 0) ||
            issuancePhase == ShortTermBondDataTypes.PoolPhase.CANCELLED
        ) {
            // If bond has been paid in full, partially or issuance was cancelled
            amountToWithdraw = depositedAmount.wadDiv(tick.depositedAmount).wadMul(tick.repayedAmount);
        } else if (tick.depositedAmount > tick.borrowedAmount && tick.repayedAmount != 0) {
            // If bond has been paid back paritally or fully and the tick was partially filled
            uint256 noneBorrowedAmountToWithdraw = didPartiallyWithdraw
                ? 0
                : depositedAmount.wadDiv(tick.depositedAmount).wadMul(tick.depositedAmount - tick.borrowedAmount);
            amountToWithdraw =
                depositedAmount.wadDiv(tick.depositedAmount).wadMul(tick.repayedAmount) +
                noneBorrowedAmountToWithdraw;
