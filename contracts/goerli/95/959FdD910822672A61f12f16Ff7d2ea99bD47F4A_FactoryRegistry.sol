import './libraries/embedded/Errors.sol';
import 'lib/openzeppelin-contracts/contracts/access/Ownable.sol';
import './libraries/embedded/types/products/ShortTermBondDataTypes.sol';
import './libraries/linked/ShortTermBondLogic.sol';

contract PoolConfigurator is Ownable {
    /*//////////////////////////////////////////////////////////////
                                 EVENTS
    //////////////////////////////////////////////////////////////*/

    event AllowBorrower(address indexed poolContract, address borrower);
    event EnableIssuance(address indexed poolContract);
    event ActivateDefault(address indexed poolContract);
    event CancelBond(address indexed poolContract);
    event EnableBookBuilding(address indexed poolContract);

    /*//////////////////////////////////////////////////////////////
                                LIBRARIES
    //////////////////////////////////////////////////////////////*/

    using WadRayMath for uint256;

    /*//////////////////////////////////////////////////////////////
                                STORAGE
    //////////////////////////////////////////////////////////////*/

    mapping(address => bool) public permissionedBorrowers;
    mapping(uint256 => ShortTermBondDataTypes.Tick) public ticks;
    ShortTermBondDataTypes.PoolPhase public poolPhase;
    uint256 public immutable poolCreationTimestamp;
    ShortTermBondDataTypes.Parameters public parameters;
    bool defaulted;
    uint256 public cancellationFeeEscrow;

    constructor() {
        poolCreationTimestamp = block.timestamp;
    }

    /*//////////////////////////////////////////////////////////////
                        EXTERNAL FUNCTIONS
    //////////////////////////////////////////////////////////////*/

    function allowBorrower(address borrower) external onlyOwner {
        permissionedBorrowers[borrower] = true;
    }

    function enableIssuancePhase() external onlyOwner {
        if (
            !(block.timestamp > poolCreationTimestamp + parameters.BOOK_BUILDING_TIME &&
                poolPhase == ShortTermBondDataTypes.PoolPhase.BOOK_BUILDING)
        ) {
            revert Errors.STB_ISSUANCE_PHASE_CANNOT_BE_ENABLED();
        }
        poolPhase = ShortTermBondDataTypes.PoolPhase.ISSUANCE;
        emit EnableIssuance(address(this));
    }

    function markPoolAsDefaulted() external onlyOwner {
        if (poolPhase != ShortTermBondDataTypes.PoolPhase.ISSUED) {
            revert Errors.STB_ONLY_DEFAULTABLE_IF_BORROWED();
        }
        poolPhase = ShortTermBondDataTypes.PoolPhase.DEFAULT;
        emit ActivateDefault(address(this));
    }

    function cancelBondIssuance() external onlyOwner {
        if (poolPhase != ShortTermBondDataTypes.PoolPhase.ISSUANCE) {
            revert Errors.STB_ISSUANCE_NOT_CANCELLABLE();
        }
        uint256 remainingEscrow = cancellationFeeEscrow;
        for (
            uint256 currentInterestRate = parameters.MIN_RATE;
            currentInterestRate <= parameters.MAX_RATE && remainingEscrow > 0;
            currentInterestRate += parameters.RATE_SPACING
        ) {
            ShortTermBondDataTypes.Tick storage tick = ticks[currentInterestRate];
            uint256 cancelFeeForTick = ShortTermBondLogic.repayCancelFeeForTick(
                tick,
                parameters.CANCELLATION_FEE_RATE,
                remainingEscrow
            );
            remainingEscrow -= cancelFeeForTick;
        }
        cancellationFeeEscrow = remainingEscrow;
        poolPhase = ShortTermBondDataTypes.PoolPhase.CANCELLED;
        emit CancelBond(address(this));
    }
}

