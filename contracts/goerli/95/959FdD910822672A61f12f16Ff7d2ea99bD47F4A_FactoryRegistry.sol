pragma solidity 0.8.13;

import '../products/ShortTermBond.sol';
import '../interfaces/IProductFactory.sol';
import 'lib/openzeppelin-contracts/contracts/token/ERC20/ERC20.sol';

contract ShortTermBondFactory is IProductFactory {
    /*//////////////////////////////////////////////////////////////
                                STORAGE
    //////////////////////////////////////////////////////////////*/

    address factoryRegistry;

    /*//////////////////////////////////////////////////////////////
                               CONSTRUCTOR
    //////////////////////////////////////////////////////////////*/

    constructor(address _factoryRegistry) {
        factoryRegistry = _factoryRegistry;
    }

    /*//////////////////////////////////////////////////////////////
                        EXTERNAL FUNCTIONS
    //////////////////////////////////////////////////////////////*/

    function deploy(
        address owner,
        bytes memory data,
        string memory name,
        string memory symbol
    ) external returns (address deployedPool) {
        require(msg.sender == factoryRegistry, 'No permission to deploy pool');
        require(data.length == 416, 'Wrong input');
        (
            address underlyingToken,
            uint256 minRate,
            uint256 maxRate,
            uint256 rateSpacing,
            uint256 maturity,
            uint256 lateRepaymentRate,
            uint256 repaymentPeriod,
            uint256 issuanceFee,
            uint256 bookBuildingTime,
            uint256 issuanceTime,
            uint256 repaymentFee,
            uint256 targetIssuanceSize,
            uint256 cancellationFeeRate
        ) = abi.decode(
                data,
                (
                    address,
                    uint256,
                    uint256,
                    uint256,
                    uint256,
                    uint256,
                    uint256,
                    uint256,
                    uint256,
                    uint256,
                    uint256,
                    uint256,
                    uint256
                )
            );

        ShortTermBondDataTypes.Parameters memory poolParameters = ShortTermBondDataTypes.Parameters({
            UNDERLYING_TOKEN: underlyingToken,
            TOKEN_DECIMALS: ERC20(underlyingToken).decimals(),
            MIN_RATE: minRate,
            MAX_RATE: maxRate,
            RATE_SPACING: rateSpacing,
            MATURITY: maturity,
            LATE_REPAYMENT_RATE: lateRepaymentRate,
            REPAYMENT_PERIOD: repaymentPeriod,
            ISSUANCE_FEE: issuanceFee,
            BOOK_BUILDING_TIME: bookBuildingTime,
            ISSUANCE_TIME: issuanceTime,
            ATLENDIS_REPAYMENT_FEE: repaymentFee,
            TARGET_ISSUANCE: targetIssuanceSize,
            CANCELLATION_FEE_RATE: cancellationFeeRate
        });

        deployedPool = address(new ShortTermBond(poolParameters, name, symbol));
        ShortTermBond(deployedPool).transferOwnership(owner);
    }
}

