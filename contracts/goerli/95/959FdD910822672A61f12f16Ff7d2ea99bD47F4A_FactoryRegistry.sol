            revert Errors.STB_WITHDRAWAL_NOT_ALLOWED(issuancePhase);
        }
    }

    function borrowFromTick(
        uint256 scaledAmount,
        ShortTermBondDataTypes.Tick storage tick,
        uint256 rate,
        uint256 maturity
    )
        external
        returns (
            bool borrowComplete,
            uint256 remainingAmount,
            uint256 deltaTheoreticalPoolNotional
        )
    {
        if (tick.depositedAmount > 0) {
            if (tick.depositedAmount < scaledAmount) {
                scaledAmount -= tick.depositedAmount;
                tick.borrowedAmount += tick.depositedAmount;
                deltaTheoreticalPoolNotional = tick.depositedAmount.wadDiv(TimeValue.getDiscountFactor(rate, maturity));
                return (false, scaledAmount, deltaTheoreticalPoolNotional);
            }
            if (tick.depositedAmount >= scaledAmount) {
                tick.borrowedAmount += scaledAmount;
                deltaTheoreticalPoolNotional = scaledAmount.wadDiv(TimeValue.getDiscountFactor(rate, maturity));
                return (true, 0, deltaTheoreticalPoolNotional);
            }
        }
        return (false, scaledAmount, 0);
    }

    function repayForTick(
        ShortTermBondDataTypes.Tick storage tick,
        uint256 rate,
        uint256 borrowTimeStamp,
        uint256 timeDeltaIntoLateRepay,
        uint256 timeDeltaStandardAccruals,
        uint256 lateRepaymentRate,
        uint256 repaymentFee
    ) external returns (uint256 amountToRepayForTick, uint256 yieldPayed) {
        if (timeDeltaIntoLateRepay > 0) {
            amountToRepayForTick = tick
                .borrowedAmount
                .wadDiv(TimeValue.getDiscountFactor(rate, timeDeltaStandardAccruals))
                .wadDiv(TimeValue.getDiscountFactor(lateRepaymentRate, timeDeltaIntoLateRepay));
        } else {
            amountToRepayForTick = tick.borrowedAmount.wadDiv(
                TimeValue.getDiscountFactor(rate, block.timestamp - borrowTimeStamp)
            );
        }

        yieldPayed = amountToRepayForTick - tick.borrowedAmount;
        tick.repayedAmount = amountToRepayForTick - yieldPayed.wadMul(repaymentFee);
    }

    function partialRepayForTick(
        ShortTermBondDataTypes.Tick storage tick,
        uint256 rate,
        uint256 borrowTimeStamp,
        uint256 totalRepay,
        uint256 poolNotional
    ) external {
        uint256 amountToRepayForTick = tick.borrowedAmount.wadDiv(
            TimeValue.getDiscountFactor(rate, block.timestamp - borrowTimeStamp)
        );
        tick.repayedAmount = amountToRepayForTick.wadDiv(poolNotional).wadMul(totalRepay);
    }

    function repayCancelFeeForTick(
        ShortTermBondDataTypes.Tick storage tick,
        uint256 cancellationFeeRate,
        uint256 remainingEscrow
    ) external returns (uint256 cancelFeeForTick) {
        if (cancellationFeeRate.wadMul(tick.depositedAmount) > remainingEscrow) {
            cancelFeeForTick = remainingEscrow;
        } else {
            cancelFeeForTick = cancellationFeeRate.wadMul(tick.depositedAmount);
        }
        tick.repayedAmount = tick.depositedAmount + cancelFeeForTick;
    }
}

