pragma solidity 0.8.13;

import '../libraries/embedded/types/products/ShortTermBondDataTypes.sol';
import '../libraries/linked/ShortTermBondLogic.sol';
import '../libraries/embedded/Scaling.sol';
import '../libraries/embedded/TimeValue.sol';
import 'lib/openzeppelin-contracts/contracts/token/ERC721/ERC721.sol';
import '../libraries/embedded/types/position/PositionDataTypes.sol';
import '../PoolConfigurator.sol';

contract ShortTermBond is PoolConfigurator, ERC721 {
    /*//////////////////////////////////////////////////////////////
                                 EVENTS
    //////////////////////////////////////////////////////////////*/

    event Withdraw(uint256 indexed positionId, address indexed poolContract, uint256 amount);
    event PartialWithdraw(uint256 indexed positionId, address indexed poolContract, uint256 amount);
    event Deposit(uint256 indexed positionId, address indexed poolContract, uint256 amount);
    event UpdateRate(uint256 indexed positionId, address indexed poolContract, uint256 oldRate, uint256 newRate);
    event Borrow(address indexed poolContract, uint256 amount, uint256 issuanceFee, uint256 cancellationFeeEscrow);
    event Repay(address indexed poolContract, uint256 amount, uint256 altendisFee);
    event PartialRepay(address indexed poolContract, uint256 amount);
    event EscrowCancellationFee(address indexed poolContract, uint256 amount);
    event WithdrawEscrow(address indexed poolContract, uint256 amount);

    /*//////////////////////////////////////////////////////////////
                                LIBRARIES
    //////////////////////////////////////////////////////////////*/

    using Scaling for uint256;
    using WadRayMath for uint256;

    /*//////////////////////////////////////////////////////////////
                                STORAGE
    //////////////////////////////////////////////////////////////*/
    mapping(uint256 => PositionDataTypes.PositionDetails) public positions;
    uint256 public nextPositionId;
    uint256 public borrowTimeStamp;
    uint256 public atlendisRevenue;
    uint256 public theoreticalPoolNotional;
    uint256 public deposits;

    /*//////////////////////////////////////////////////////////////
                               CONSTRUCTOR
    //////////////////////////////////////////////////////////////*/

    constructor(
        ShortTermBondDataTypes.Parameters memory poolParameters,
        string memory name,
        string memory symbol
    ) ERC721(name, symbol) PoolConfigurator() {
        parameters = poolParameters;
        if (parameters.CANCELLATION_FEE_RATE > 0) {
            poolPhase = ShortTermBondDataTypes.PoolPhase.INACTIVE;
        } else {
            poolPhase = ShortTermBondDataTypes.PoolPhase.BOOK_BUILDING;
        }
    }

    /*//////////////////////////////////////////////////////////////
                            VIEW FUNCTIONS
    //////////////////////////////////////////////////////////////*/

    function getPositionComposition(uint256 positionId)
        public
        view
        returns (
            uint256 depositedAmount,
            uint256 borrowedAmount,
            uint256 theoreticalBondValue,
            uint256 noneBorrowedAvailableAmount
        )
    {
        ownerOf(positionId);
        ShortTermBondDataTypes.Tick storage tick = ticks[positions[positionId].rate];

        if (tick.depositedAmount == tick.borrowedAmount) {
            return (
                positions[positionId].depositedAmount,
                positions[positionId].depositedAmount,
                positions[positionId].depositedAmount.wadDiv(
                    TimeValue.getDiscountFactor(positions[positionId].rate, parameters.MATURITY)
                ),
                0
            );
        }

        if (tick.borrowedAmount == 0) {
            return (positions[positionId].depositedAmount, 0, 0, positions[positionId].depositedAmount);
        }

        if (tick.depositedAmount > tick.borrowedAmount) {
            uint256 noneFilledDeposit = positions[positionId].depositedAmount.wadDiv(tick.depositedAmount).wadMul(
                tick.depositedAmount - tick.borrowedAmount
            );

            if (positions[positionId].hasWithdrawParitally) {
                return (
                    positions[positionId].depositedAmount,
                    positions[positionId].depositedAmount - noneFilledDeposit,
                    positions[positionId].depositedAmount.wadDiv(tick.depositedAmount).wadMul(
                        tick.borrowedAmount.wadDiv(
                            TimeValue.getDiscountFactor(positions[positionId].rate, parameters.MATURITY)
                        )
                    ),
                    0
                );
            } else {
                return (
                    positions[positionId].depositedAmount,
                    positions[positionId].depositedAmount - noneFilledDeposit,
                    theoreticalBondValue,
                    noneFilledDeposit
                );
            }
        }
    }

    /*//////////////////////////////////////////////////////////////
                        EXTERNAL FUNCTIONS LENDER
    //////////////////////////////////////////////////////////////*/

    function deposit(
        uint256 rate,
        uint256 amount,
        address to
    ) external returns (uint256 positionId) {
        if (
            poolPhase != ShortTermBondDataTypes.PoolPhase.BOOK_BUILDING ||
            block.timestamp > poolCreationTimestamp + parameters.BOOK_BUILDING_TIME
        ) {
            revert Errors.STB_ALLOWED_ONLY_BOOK_BUILDING_PHASE();
        }

        uint256 scaledAmount = ShortTermBondLogic.depositToTick(
            ticks[rate],
            amount,
            parameters.UNDERLYING_TOKEN,
            parameters.TOKEN_DECIMALS
        );
        positionId = nextPositionId++;
        deposits += scaledAmount;
        _safeMint(to, positionId);
        positions[positionId] = PositionDataTypes.PositionDetails({
            depositedAmount: scaledAmount,
            rate: rate,
            depositBlockNumber: block.number,
            hasWithdrawParitally: false
        });
        emit Deposit(positionId, address(this), scaledAmount);
    }

    function updateRate(uint256 newRate, uint256 positionId) external {
        if (
            poolPhase != ShortTermBondDataTypes.PoolPhase.BOOK_BUILDING ||
            block.timestamp > poolCreationTimestamp + parameters.BOOK_BUILDING_TIME
        ) {
            revert Errors.STB_ALLOWED_ONLY_BOOK_BUILDING_PHASE();
        }

        uint256 oldRate = positions[positionId].rate;

        ShortTermBondLogic.updateTicksDeposit(ticks[oldRate], ticks[newRate], positions[positionId].depositedAmount);
        positions[positionId].rate = newRate;
        emit UpdateRate(positionId, address(this), oldRate, newRate);
    }

    function withdraw(uint256 positionId) external {
        if (ownerOf(positionId) != msg.sender) {
            revert Errors.STB_MGMT_ONLY_OWNER();
        }

        if (positions[positionId].depositBlockNumber == block.number) {
            revert Errors.STB_TIMELOCK();
        }

        (uint256 amountWithdrawn, bool partialWithdrawPartialFilledTick) = ShortTermBondLogic.withdrawFromTick(
            ticks[positions[positionId].rate],
            poolPhase,
            positions[positionId].depositedAmount,
            positions[positionId].hasWithdrawParitally
        );

        if (poolPhase == ShortTermBondDataTypes.PoolPhase.BOOK_BUILDING) {
            deposits -= amountWithdrawn;
        }

        emit Withdraw(positionId, address(this), amountWithdrawn);
        if (partialWithdrawPartialFilledTick) {
            positions[positionId].hasWithdrawParitally = true;
        } else {
            _burn(positionId);
            delete positions[positionId];
        }
        ShortTermBondLogic.transferERC20(
            msg.sender,
            parameters.UNDERLYING_TOKEN,
            ShortTermBondLogic.scaleToERC20Decimal(amountWithdrawn, parameters.TOKEN_DECIMALS)
        );
    }

    /// @dev Making use of function overloading to withdraw less then 100%
    /// @notice Partial withdraws are only feasible before a borrow due to the none
    ///         revolving nature of STB. There is no reason to partially withdraw after or during a borrow
    function withdraw(uint256 positionId, uint256 amount) external {
        if (ownerOf(positionId) != msg.sender) {
            revert Errors.STB_MGMT_ONLY_OWNER();
        }

        if (positions[positionId].depositBlockNumber == block.number) {
            revert Errors.STB_TIMELOCK();
        }

        if (poolPhase != ShortTermBondDataTypes.PoolPhase.BOOK_BUILDING) {
            revert Errors.STB_PARTIAL_WITHDRAW_NOT_ALLOWED();
        }

        if (amount > positions[positionId].depositedAmount) {
            revert Errors.STB_WITHDRAW_AMOUNT_TOO_LARGE();
        }
        uint256 scaledWithdrawal = ShortTermBondLogic.scaleToWad(amount, parameters.TOKEN_DECIMALS);
        ticks[positions[positionId].rate].depositedAmount -= scaledWithdrawal;
        if (positions[positionId].depositedAmount == scaledWithdrawal) {
            _burn(positionId);
            delete positions[positionId];
        } else {
            positions[positionId].depositedAmount -= scaledWithdrawal;
        }
        emit PartialWithdraw(positionId, address(this), scaledWithdrawal);
        deposits -= scaledWithdrawal;
        ShortTermBondLogic.transferERC20(msg.sender, parameters.UNDERLYING_TOKEN, amount);
    }

    /*//////////////////////////////////////////////////////////////
                        EXTERNAL FUNCTIONS BORROWER
    //////////////////////////////////////////////////////////////*/

    function borrow(address to) external {
        if (poolPhase != ShortTermBondDataTypes.PoolPhase.ISSUANCE) {
            revert Errors.STB_ISSUANCE_PHASE_NOT_ACTIVE();
        }
        if (!permissionedBorrowers[msg.sender]) {
            revert Errors.STB_NOT_PERMISSIONED_BORROWER();
        }
        poolPhase = ShortTermBondDataTypes.PoolPhase.ISSUED;
        uint256 borrowedAmount = deposits < parameters.TARGET_ISSUANCE ? deposits : parameters.TARGET_ISSUANCE;
        if (borrowedAmount == 0) {
            revert Errors.STB_ZERO_BORROW_AMOUNT_NOT_ALLOWED();
        }
        uint256 issuanceFee = parameters.ISSUANCE_FEE.wadMul(borrowedAmount);
        atlendisRevenue += issuanceFee;
        bool borrowComplete = false;
        uint256 currentInterestRate = parameters.MIN_RATE;
        uint256 deltaTheoreticalPoolNotional;
        uint256 remainingAmount = borrowedAmount;
        while (remainingAmount > 0 && currentInterestRate <= parameters.MAX_RATE && !borrowComplete) {
            if (ticks[currentInterestRate].depositedAmount > 0) {
                (borrowComplete, remainingAmount, deltaTheoreticalPoolNotional) = ShortTermBondLogic.borrowFromTick(
                    remainingAmount,
                    ticks[currentInterestRate],
                    currentInterestRate,
                    parameters.MATURITY
                );
                theoreticalPoolNotional += deltaTheoreticalPoolNotional;
            }
            currentInterestRate += parameters.RATE_SPACING;
        }
        if (remainingAmount > 0) {
            revert Errors.STB_NOT_ENOUGH_FUNDS_AVAILABLE();
        }

        borrowTimeStamp = block.timestamp;
        ShortTermBondLogic.transferERC20(
            to,
            parameters.UNDERLYING_TOKEN,
            ShortTermBondLogic.scaleToERC20Decimal(
                borrowedAmount - issuanceFee + cancellationFeeEscrow,
                parameters.TOKEN_DECIMALS
            )
        );
        emit Borrow(address(this), borrowedAmount, issuanceFee, cancellationFeeEscrow);
    }

    function repay() external {
        if (!permissionedBorrowers[msg.sender]) {
            revert Errors.STB_NOT_PERMISSIONED_BORROWER();
        }
        if (block.timestamp < borrowTimeStamp + parameters.MATURITY) {
            revert Errors.STB_EARLY_REPAY_NOT_ALLOWED();
        }
        if (poolPhase != ShortTermBondDataTypes.PoolPhase.ISSUED) {
            revert Errors.STB_REPAY_NOT_POSSIBLE_DURING_PHASE(poolPhase);
        }
        uint256 lateRepaymentThreshold = borrowTimeStamp + parameters.MATURITY + parameters.REPAYMENT_PERIOD;
        uint256 timeDeltaIntoLateRepay = (block.timestamp > lateRepaymentThreshold)
            ? block.timestamp - lateRepaymentThreshold
            : 0;
        uint256 currentInterestRate = parameters.MIN_RATE;
        uint256 totalToRepay;
        uint256 interestToRepay;
        while (currentInterestRate <= parameters.MAX_RATE) {
            ShortTermBondDataTypes.Tick storage tick = ticks[currentInterestRate];
            if (tick.borrowedAmount > 0) {
                (uint256 amountToRepayForTick, uint256 interestRepayedForTick) = ShortTermBondLogic.repayForTick(
                    tick,
                    currentInterestRate,
                    borrowTimeStamp,
                    timeDeltaIntoLateRepay,
                    parameters.MATURITY + parameters.REPAYMENT_PERIOD,
                    parameters.LATE_REPAYMENT_RATE,
                    parameters.ATLENDIS_REPAYMENT_FEE
                );
                interestToRepay += interestRepayedForTick;
                totalToRepay += amountToRepayForTick;
            }
            currentInterestRate += parameters.RATE_SPACING;
        }
        uint256 atlendisFee = interestToRepay.wadMul(parameters.ATLENDIS_REPAYMENT_FEE);
        atlendisRevenue += atlendisFee;
        poolPhase = ShortTermBondDataTypes.PoolPhase.REPAYED;
        ShortTermBondLogic.transferERC20From(
            msg.sender,
            address(this),
            parameters.UNDERLYING_TOKEN,
            ShortTermBondLogic.scaleToERC20Decimal(totalToRepay, parameters.TOKEN_DECIMALS)
        );
        emit Repay(address(this), totalToRepay, atlendisFee);
    }

    function partialRepay(uint256 amount) external {
        if (!permissionedBorrowers[msg.sender]) {
            revert Errors.STB_NOT_PERMISSIONED_BORROWER();
        }
        if (block.timestamp < borrowTimeStamp + parameters.MATURITY) {
            revert Errors.STB_EARLY_PARTIAL_REPAY_NOT_ALLOWED();
        }
        if (poolPhase != ShortTermBondDataTypes.PoolPhase.ISSUED) {
            revert Errors.STB_PARTIAL_REPAY_NOT_POSSIBLE_DURING_PHASE(poolPhase);
        }
        uint256 scaledRepayAmound = ShortTermBondLogic.scaleToWad(amount, parameters.TOKEN_DECIMALS);
        uint256 currentInterestRate = parameters.MIN_RATE;
        while (currentInterestRate <= parameters.MAX_RATE) {
            ShortTermBondDataTypes.Tick storage tick = ticks[currentInterestRate];
            if (tick.borrowedAmount > 0) {
                ShortTermBondLogic.partialRepayForTick(
                    tick,
                    currentInterestRate,
                    borrowTimeStamp,
                    scaledRepayAmound,
                    theoreticalPoolNotional
                );
            }
            currentInterestRate += parameters.RATE_SPACING;
        }
        poolPhase = ShortTermBondDataTypes.PoolPhase.PARTIAL_DEFAULT;
        ShortTermBondLogic.transferERC20From(msg.sender, address(this), parameters.UNDERLYING_TOKEN, amount);
        emit PartialRepay(address(this), amount);
    }

    function escrowCancellationFee() external {
        if (!permissionedBorrowers[msg.sender]) {
            revert Errors.STB_NOT_PERMISSIONED_BORROWER();
        }
        if (poolPhase != ShortTermBondDataTypes.PoolPhase.INACTIVE) {
            revert Errors.STB_ESCROWING_NOT_POSSIBLE_DURING_PHASE(poolPhase);
        }

        cancellationFeeEscrow = parameters.CANCELLATION_FEE_RATE.wadMul(parameters.TARGET_ISSUANCE);
        ShortTermBondLogic.transferERC20From(
            msg.sender,
            address(this),
            parameters.UNDERLYING_TOKEN,
            ShortTermBondLogic.scaleToERC20Decimal(cancellationFeeEscrow, parameters.TOKEN_DECIMALS)
        );
        poolPhase = ShortTermBondDataTypes.PoolPhase.BOOK_BUILDING;
        emit EscrowCancellationFee(address(this), cancellationFeeEscrow);
    }

    function withdrawRemainingEscrow(address to) external {
        if (!permissionedBorrowers[msg.sender]) {
            revert Errors.STB_NOT_PERMISSIONED_BORROWER();
        }
        if (poolPhase != ShortTermBondDataTypes.PoolPhase.CANCELLED) {
            revert Errors.STB_ESCROW_WITHDRAWAL_ONLY_POSSIBLE_IN_CANCELLED_PHASE();
        }

        ShortTermBondLogic.transferERC20(
            to,
            parameters.UNDERLYING_TOKEN,
            ShortTermBondLogic.scaleToERC20Decimal(cancellationFeeEscrow, parameters.TOKEN_DECIMALS)
        );
        emit WithdrawEscrow(address(this), cancellationFeeEscrow);
    }
}

