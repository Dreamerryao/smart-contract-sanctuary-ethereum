pragma solidity 0.8.7;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@chainlink/contracts/src/v0.8/interfaces/AggregatorV3Interface.sol";
import "./PriceConverter.sol";

contract PaymentProcessor {
    using PriceConverter for uint256;
    AggregatorV3Interface internal priceFeed;

    address public admin;
    IERC20 public dai;

    event PaymentDone(address payer, uint256 price, uint256 paymentId, uint256 date);

    constructor(
        address adminAddress,
        address daiAddress,
        address priceFeedAddress
    ) {
        admin = adminAddress;
        dai = IERC20(daiAddress);
        priceFeed = AggregatorV3Interface(priceFeedAddress);
    }

    function pay(uint256 paymentId, uint256 price) public payable {
        require(msg.value.getConversionRate(priceFeed) >= price, "You need to spend more ETH!");
        dai.transferFrom(msg.sender, admin, price);
        emit PaymentDone(msg.sender, price, paymentId, block.timestamp);
    }

    function getPrice() public view returns (uint256) {
        (, int256 answer, , , ) = priceFeed.latestRoundData();
        // ETH/USD rate in 18 digit
        return uint256(answer * 1000000000);
    }

    function getConversionRate(uint256 usdPrice) public view returns (uint256) {
        uint256 ethPrice = getPrice();
        uint256 usdAmountInEth = (usdPrice * 1000000000000000000) / ethPrice;
        // the actual ETH/USD conversion rate, after adjusting the extra 0s.
        return usdAmountInEth;
    }

    function getPriceFeed() public view returns (AggregatorV3Interface) {
        return priceFeed;
    }
}

