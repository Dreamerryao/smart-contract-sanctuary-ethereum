import "@openzeppelin/contracts/token/ERC721/IERC721.sol";

import "@openzeppelin/contracts/utils/introspection/IERC165.sol";
import "@openzeppelin/contracts/utils/introspection/ERC165Checker.sol";

import "@manifoldxyz/creator-core-solidity/contracts/core/IERC721CreatorCore.sol";
import "@manifoldxyz/creator-core-solidity/contracts/extensions/ERC721/IERC721CreatorExtensionApproveTransfer.sol";

import "../edition/IERC721NumberedEdition.sol";
import "../collabproject/SoulboundAlex.sol";


contract ERC721SoulboundAlex is SoulboundAlex, IERC165, IERC721CreatorExtensionApproveTransfer {

    function supportsInterface(bytes4 interfaceId) public view virtual override(IERC165) returns (bool) {
        return interfaceId == type(IERC721CreatorExtensionApproveTransfer).interfaceId || interfaceId == type(IERC165).interfaceId;
    }

    /**
     * @dev Set whether or not the creator will check the extension for approval of token transfer
     */
    function setApproveTransfer(address creatorContractAddress, bool enabled) external creatorAdminRequired(creatorContractAddress) {
        require(ERC165Checker.supportsInterface(creatorContractAddress, type(IERC721CreatorCore).interfaceId), "Invalid address");
        IERC721CreatorCore(creatorContractAddress).setApproveTransferExtension(enabled);
    }

    /**
     * @dev Called by creator contract to approve a transfer
     */
    function approveTransfer(address, address from, address to, uint256) external pure returns (bool) {
        return _approveTransfer(from, to);
    }

    /**
     * @dev Allow transfers from and to the zero address (minting and burning)
     */
    function _approveTransfer(address from, address to) private pure returns (bool) {
        // allow mint & burn transfers, otherwise don't allow
        return from == address(0) || to == address(0);
    }

    /**
     * @dev Mints a new Soulbound token to the recipient
     */
    function mintToken(address creatorContractAddress, address recipient, string memory tokenURI) external creatorAdminRequired(creatorContractAddress) {
        IERC721CreatorCore(creatorContractAddress).mintExtension(recipient, tokenURI);
        if (!isSoulboundOwner[recipient]) {
            soulboundOwners.push(recipient);
            isSoulboundOwner[recipient] = true;
        }
    }

    /**
     * @dev Mints a new Soulbound token to multiple recipients
     */
    function mintTokens(address creatorContractAddress, address[] calldata recipients, string memory tokenURI) external creatorAdminRequired(creatorContractAddress) {
        require(recipients.length > 0 && recipients.length <= 10, "1-10 recipients required");
        for (uint i = 0; i < recipients.length; i++) {
            IERC721CreatorCore(creatorContractAddress).mintExtension(recipients[i], tokenURI);
            if (!isSoulboundOwner[recipients[i]]) {
                soulboundOwners.push(recipients[i]);
                isSoulboundOwner[recipients[i]] = true;
            }
        }
    }
        
}

