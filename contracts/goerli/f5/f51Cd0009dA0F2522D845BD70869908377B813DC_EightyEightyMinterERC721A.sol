contract EightyEightyMinterERC721A is
    ERC721AUpgradeable,
    Ownable,
    PausableUpgradeable,
    Whitelist,
    PaymentSplitterUpgradeable,
    ReentrancyGuardUpgradeable
{
    struct SaleCondition {
        uint256 buyLimitPerWallet;
        uint256 remainingTokens;
        uint256 mintPrice;
        string groupID;
        address currency;
    }

    struct Sale {
        SaleCondition saleConditions;
        mapping(address => uint256) saleMintTracker;
    }

    struct TokenGatedSale {
        SaleCondition saleConditions;
        uint256 minMintReq;
        address tokenGatedAddress;
        mapping(uint256 => uint256) tokenTracker;
    }

    struct SaleList {
        uint256 currentStartId;
        uint256 count;
        mapping(uint256 => Sale) sales;
    }

    struct TokenGatedSaleList {
        uint256 currentStartId;
        uint256 count;
        mapping(uint256 => TokenGatedSale) tokenGatedSales;
    }

    struct GeneralSettings {
        uint256 maxSupply;
        string baseURI;
        uint256 ownerRemainingCap;
        uint256 revealAfter;
        bool revealed;
        address designatedSigner;
        address[] payees;
        uint256[] shares;
    }

    SaleList public saleLists;
    TokenGatedSaleList public tokenGatedSaleLists;

    bytes32 private constant MODULE_TYPE = bytes32("EightyEightyMinterERC721A");
    uint256 private constant VERSION = 1;

    string public baseURI;
    address public designatedSigner;

    uint256 public maxSupply;
    uint256 public ownerRemainingCap;

    uint256 public revealAfter;
    bool public revealed;

    modifier checkSupply(uint256 _amount) {
        require(_amount > 0, "Invalid Amount");
        require(_amount + totalSupply() <= maxSupply - ownerRemainingCap, "Exceeding Max Supply");
        _;
    }

    /**
    @notice Event when sale conditions are updated  
    @param saleConditionIndex Array Index for in which sale token is minted  
    @param buyer Buyer address  
    @param amount Amount of token minted    
    */
    event TokensMinted(uint256 indexed saleConditionIndex, address indexed buyer, uint256 amount);

    /**
    @notice Event when sale conditions are updated  
    @param sales Array of new sales  
    */
    event SaleConditionsUpdated(SaleCondition[] sales);

    /**
    @notice Event for uri change when token are revealed   
    @param uri New uri of the collection   
    */
    event URI(string uri);

    /**
    @notice Event when token are revealed   
    @param time Time when token are revealed   
    */
    event TokensRevealed(uint256 time);

    /**
    @notice This is initializer function is used to initialize values of contracts  
    @param _name Collection name  
    @param _symbol Collection Symbol  
    @param _SIGNING_DOMAIN Signing domain  
    @param _SIGNATURE_VERSION Signing version   
    @param _generalSettings General Setting for Drop  
    */
    function initialize(
        GeneralSettings memory _generalSettings,
        string memory _name,
        string memory _symbol,
        string memory _SIGNING_DOMAIN,
        string memory _SIGNATURE_VERSION
    ) public initializer {
        require(
            _generalSettings.payees.length == _generalSettings.shares.length,
            "EightyEightyMinterERC721A Initialize: Invalid Input"
        );
        __Ownable_init();
        __Pausable_init();
        __ReentrancyGuard_init();
        __ERC721A_init(_name, _symbol);
        __EightyEightyMinterSigner_init(_SIGNING_DOMAIN, _SIGNATURE_VERSION);
        __PaymentSplitter_init(_generalSettings.payees, _generalSettings.shares);

        designatedSigner = _generalSettings.designatedSigner;
        maxSupply = _generalSettings.maxSupply;
        baseURI = _generalSettings.baseURI;

        ownerRemainingCap = _generalSettings.ownerRemainingCap;

        revealed = _generalSettings.revealed;
        revealAfter = _generalSettings.revealAfter;
    }

    /**
    @notice Returns the type of the contract   
    */
    function contractType() external pure returns (bytes32) {
        return MODULE_TYPE;
    }

    /**
    @notice Returns the version of the contract   
    */
    function contractVersion() external pure returns (uint8) {
        return uint8(VERSION);
    }

    /**
    @notice This is function is used to mint tokens for owner  
    @param _amount amount of tokens to mint  
    @param _accounts accounts on which you need to air drop  
    */
    function airDrop(uint256[] calldata _amount, address[] calldata _accounts) external onlyOwner {
        require(_amount.length == _accounts.length, "EightyEightyMinterERC721A AirDrop: Invalid Input");

        uint256 totalAmount = 0;
        for (uint256 i = 0; i < _amount.length; i++) {
            totalAmount += _amount[i];
        }

        require(totalAmount + totalSupply() <= maxSupply, "EightyEightyMinterERC721A AirDrop: Exceeding Supply");
        require(totalAmount <= ownerRemainingCap, "EightyEightyMinterERC721A AirDrop: Exceeding Owner Allotment");

        ownerRemainingCap -= totalAmount;

        for (uint256 i = 0; i < _accounts.length; i++) {
            _mint(_accounts[i], _amount[i]);
        }
    }

    /**
    @notice This is function is used to mint tokens   
    @param _whitelist whitelisting object which contains user address and backend signature for verification  
    @param _amount amount of tokens to mint in one transaction   
    */
    function allowListMint(whitelist memory _whitelist, uint256 _amount)
        external
        payable
        whenNotPaused
        nonReentrant
        checkSupply(_amount)
    {
        require(msg.sender == tx.origin, "EightyEightyMinterERC721A Mint: Only wallets allowed");

        // Get the sale conditions.
        uint256 activeSaleId = getActiveSaleConditionId(_whitelist.groupID, false);

        verifySaleCondition(activeSaleId, _whitelist, _amount, false);

        collectMintPrice(activeSaleId, _amount, false);

        transferMintedTokens(activeSaleId, _whitelist, _amount, false);

        emit TokensMinted(activeSaleId, _msgSender(), _amount);
    }

    /**
    @notice This is function is used to mint token gated tokens       
    @param _whitelist whitelisting object which contains user address and backend signature for verification  
    @param _tokenIds Token gated tokens Ids held by the caller  
    @param _amounts No. of tokens the caller wishes to mint against the tokenIds  
    */
    function tokenGatedMint(
        whitelist memory _whitelist,
        uint256[] memory _tokenIds,
        uint256[] memory _amounts
    ) external payable whenNotPaused nonReentrant {
        require(msg.sender == tx.origin, "EightyEightyMinterERC721A Token Gated Mint: Only wallets allowed");
        require(_tokenIds.length == _amounts.length, "EightyEightyMinterERC721A Token Gated Mint: Invalid Input");

        // Get the sale conditions.
        uint256 activeSaleId = getActiveSaleConditionId(_whitelist.groupID, true);
        require(
            _tokenIds.length >= tokenGatedSaleLists.tokenGatedSales[activeSaleId].minMintReq,
            "EightyEightyMinterERC721A Token Gated Mint: Min requirement not satisfy"
        );
        uint256 totalAmountToMint = 0;

        for (uint256 i = 0; i < _tokenIds.length; i++) {
            require(_tokenIds[i] != 0 && _amounts[i] != 0, "EightyEightyMinterERC721A Token Gated Mint: Null Input");
            require(
                IERC721Upgradeable(tokenGatedSaleLists.tokenGatedSales[activeSaleId].tokenGatedAddress).ownerOf(
                    _tokenIds[i]
                ) == msg.sender,
                "EightyEightyMinterERC721A Token Gated Mint: !Owner"
            );
            require(
                _amounts[i] + tokenGatedSaleLists.tokenGatedSales[activeSaleId].tokenTracker[_tokenIds[i]] <=
                    tokenGatedSaleLists.tokenGatedSales[activeSaleId].saleConditions.buyLimitPerWallet,
                "EightyEightyMinterERC721A Token Gated Mint: Claimed Already"
            );
            totalAmountToMint += _amounts[i];
            tokenGatedSaleLists.tokenGatedSales[activeSaleId].tokenTracker[_tokenIds[i]] += _amounts[i];
        }

        require(totalAmountToMint + totalSupply() <= maxSupply - ownerRemainingCap, "Exceeding Max Supply");

        verifySaleCondition(activeSaleId, _whitelist, totalAmountToMint, true);
        collectMintPrice(activeSaleId, totalAmountToMint, true);
        transferMintedTokens(activeSaleId, _whitelist, totalAmountToMint, true);

        emit TokensMinted(activeSaleId, _msgSender(), totalAmountToMint);
    }

    /**
    @notice This is function is used to mint get active sale id in saleLists array    
    @param _groupID List type of sale you want to get   
    @param _isTokenGated Boolean value to know if sale is token gated   
    */
    function getActiveSaleConditionId(string memory _groupID, bool _isTokenGated) public view returns (uint256) {
        if (_isTokenGated) {
            for (
                uint256 i = tokenGatedSaleLists.currentStartId + tokenGatedSaleLists.count;
                i > tokenGatedSaleLists.currentStartId;
                i--
            ) {
                if (
                    keccak256(abi.encodePacked(_groupID)) ==
                    keccak256(abi.encodePacked(tokenGatedSaleLists.tokenGatedSales[i - 1].saleConditions.groupID))
                ) {
                    return i - 1;
                }
            }
        } else {
            for (uint256 i = saleLists.currentStartId + saleLists.count; i > saleLists.currentStartId; i--) {
                if (
                    keccak256(abi.encodePacked(_groupID)) ==
                    keccak256(abi.encodePacked(saleLists.sales[i - 1].saleConditions.groupID))
                ) {
                    return i - 1;
                }
            }
        }

        revert("Wrong Sale Details");
    }

    /**
    @notice This is function is used to verify sale conditions   
    @param _saleId Active sale id in saleLists array   
    @param _whitelist whitelisting object which contains user address and backend signature for verification  
    @param _amount amount of tokens to mint in one transaction   
    @param _isTokenGated Boolean value to know if sale is token gated   
    */
    function verifySaleCondition(
        uint256 _saleId,
        whitelist memory _whitelist,
        uint256 _amount,
        bool _isTokenGated
    ) internal view {
        require(getSigner(_whitelist) == designatedSigner, "!Signer");
        require(_whitelist.userAddress == msg.sender, "!Sender");

        if (_isTokenGated) {
            require(
                keccak256(abi.encodePacked(_whitelist.groupID)) ==
                    keccak256(abi.encodePacked(tokenGatedSaleLists.tokenGatedSales[_saleId].saleConditions.groupID)),
                "EightyEightyMinterERC721A Token Gated Mint: Wrong list type"
            );
            require(
                _amount <= tokenGatedSaleLists.tokenGatedSales[_saleId].saleConditions.remainingTokens,
                "EightyEightyMinterERC721A Token Gated Mint: All Sold Out"
            );
        } else {
            require(
                keccak256(abi.encodePacked(_whitelist.groupID)) ==
                    keccak256(abi.encodePacked(saleLists.sales[_saleId].saleConditions.groupID)),
                "EightyEightyMinterERC721A Mint: Wrong list type"
            );
            require(
                _amount + saleLists.sales[_saleId].saleMintTracker[_whitelist.userAddress] <=
                    saleLists.sales[_saleId].saleConditions.buyLimitPerWallet,
                "EightyEightyMinterERC721A Mint: Individual Cap exceeding"
            );
            require(
                _amount <= saleLists.sales[_saleId].saleConditions.remainingTokens,
                "EightyEightyMinterERC721A Mint: All Sold Out"
            );
        }
    }

    /**
    @notice This is function is used to collect mint price  
    @param _saleId Active sale id in saleLists array   
    @param _amount amount of tokens to mint in one transaction  
    @param _isTokenGated Boolean value to know if sale is token gated   
    */
    function collectMintPrice(
        uint256 _saleId,
        uint256 _amount,
        bool _isTokenGated
    ) internal {
        if (_isTokenGated) {
            require(
                msg.value >= _amount * tokenGatedSaleLists.tokenGatedSales[_saleId].saleConditions.mintPrice,
                "EightyEightyMinterERC721A Token Gated Mint: Pay Exact fees"
            );
            if (
                tokenGatedSaleLists.tokenGatedSales[_saleId].saleConditions.currency == CurrencyTransferLib.NATIVE_TOKEN
            ) {
                CurrencyTransferLib.transferCurrency(
                    tokenGatedSaleLists.tokenGatedSales[_saleId].saleConditions.currency,
                    _msgSender(),
                    address(this),
                    _amount
                );
                if (
                    (msg.value - (_amount * tokenGatedSaleLists.tokenGatedSales[_saleId].saleConditions.mintPrice)) > 0
                ) {
                    CurrencyTransferLib.transferCurrency(
                        tokenGatedSaleLists.tokenGatedSales[_saleId].saleConditions.currency,
                        address(this),
                        _msgSender(),
                        msg.value - (_amount * tokenGatedSaleLists.tokenGatedSales[_saleId].saleConditions.mintPrice)
                    );
                }
            } else {
                CurrencyTransferLib.transferCurrency(
                    tokenGatedSaleLists.tokenGatedSales[_saleId].saleConditions.currency,
                    _msgSender(),
                    owner(),
                    _amount
                );
                if (
                    (msg.value - (_amount * tokenGatedSaleLists.tokenGatedSales[_saleId].saleConditions.mintPrice)) > 0
                ) {
                    CurrencyTransferLib.transferCurrency(
                        tokenGatedSaleLists.tokenGatedSales[_saleId].saleConditions.currency,
                        owner(),
                        _msgSender(),
                        msg.value - (_amount * tokenGatedSaleLists.tokenGatedSales[_saleId].saleConditions.mintPrice)
                    );
                }
            }
        } else {
            require(
                msg.value >= _amount * saleLists.sales[_saleId].saleConditions.mintPrice,
                "EightyEightyMinterERC721A Mint: Pay exact fees"
            );
            if (saleLists.sales[_saleId].saleConditions.currency == CurrencyTransferLib.NATIVE_TOKEN) {
                CurrencyTransferLib.transferCurrency(
                    saleLists.sales[_saleId].saleConditions.currency,
                    _msgSender(),
                    address(this),
                    _amount
                );
                if ((msg.value - (_amount * saleLists.sales[_saleId].saleConditions.mintPrice)) > 0) {
                    CurrencyTransferLib.transferCurrency(
                        saleLists.sales[_saleId].saleConditions.currency,
                        address(this),
                        _msgSender(),
                        msg.value - (_amount * saleLists.sales[_saleId].saleConditions.mintPrice)
                    );
                }
            } else {
                CurrencyTransferLib.transferCurrency(
                    saleLists.sales[_saleId].saleConditions.currency,
                    _msgSender(),
                    owner(),
                    _amount
                );
                if ((msg.value - (_amount * saleLists.sales[_saleId].saleConditions.mintPrice)) > 0) {
                    CurrencyTransferLib.transferCurrency(
                        saleLists.sales[_saleId].saleConditions.currency,
                        owner(),
                        _msgSender(),
                        msg.value - (_amount * saleLists.sales[_saleId].saleConditions.mintPrice)
                    );
                }
            }
        }
    }

    /**
    @notice This is function is used to transfer minted tokens    
    @param _saleId Active sale id in saleLists array   
    @param _whitelist whitelisting object which contains user address and backend signature for verification  
    @param _amount amount of tokens to mint in one transaction   
    @param _isTokenGated Boolean value to know if sale is token gated  
    */
    function transferMintedTokens(
        uint256 _saleId,
        whitelist memory _whitelist,
        uint256 _amount,
        bool _isTokenGated
    ) internal {
        if (_isTokenGated) {
            tokenGatedSaleLists.tokenGatedSales[_saleId].saleConditions.remainingTokens -= _amount;
        } else {
            saleLists.sales[_saleId].saleMintTracker[_whitelist.userAddress] += _amount;
            saleLists.sales[_saleId].saleConditions.remainingTokens -= _amount;
        }

        _mint(_whitelist.userAddress, _amount);
    }

    /**
    @notice This is function is used to set sales conditions  
    @param _sales Array of sales condition which need to set, update or delete  
    @param _resetSales Boolean to reset all sales or not  
    */
    function setSaleConditions(SaleCondition[] calldata _sales, bool _resetSales) external onlyOwner {
        uint256 existingStartIndex = saleLists.currentStartId;
        uint256 existingSaleCount = saleLists.count;

        /**
         *  If `_resetSales == true`, we assign completely new UIDs to the sale
         *  conditions in `_sales`, effectively resetting the restrictions on sales.
         */
        uint256 newStartIndex = existingStartIndex;
        if (_resetSales) {
            newStartIndex = existingStartIndex + existingSaleCount;
        }

        saleLists.count = _sales.length;
        saleLists.currentStartId = newStartIndex;

        for (uint256 i = 0; i < _sales.length; i++) {
            saleLists.sales[newStartIndex + i].saleConditions = _sales[i];
        }

        /**
         *  Gas refunds (as much as possible)
         *
         *  If `_resetSales == true`, we assign completely new UIDs to the sale
         *  conditions in `_sales`. So, we delete sale conditions with UID < `newStartIndex`.
         *
         *  If `_resetSales == false`, and there are more existing sale conditions
         *  than in `_sales`, we delete the existing sale conditions that don't get replaced
         *  by the conditions in `_sales`.
         */
        if (_resetSales) {
            for (uint256 i = existingStartIndex; i < newStartIndex; i++) {
                delete saleLists.sales[i];
            }
        } else {
            if (existingSaleCount > _sales.length) {
                for (uint256 i = _sales.length; i < existingSaleCount; i++) {
                    delete saleLists.sales[newStartIndex + i];
                }
            }
        }

        emit SaleConditionsUpdated(_sales);
    }

    /**
    @notice This function is used to set sales conditions  
    @param _sales Array of sales condition which need to set, update or delete  
    @param _resetSales Boolean to reset all sales or not  
    */
    function setTokenGatedSaleConditions(
        SaleCondition[] calldata _sales,
        uint256[] calldata _minMintReq,
        address[] calldata _tokenGatedAddress,
        bool _resetSales
    ) external onlyOwner {
        require(_sales.length == _minMintReq.length, "SetTokenGatedSaleConditions: invalid input");
        require(_minMintReq.length == _tokenGatedAddress.length, "SetTokenGatedSaleConditions: invalid input");

        uint256 existingStartIndex = tokenGatedSaleLists.currentStartId;
        uint256 existingSaleCount = tokenGatedSaleLists.count;

        /**
         *  If `_resetSales == true`, we assign completely new UIDs to the sale
         *  conditions in `_sales`, effectively resetting the restrictions on sales.
         */
        uint256 newStartIndex = existingStartIndex;
        if (_resetSales) {
            newStartIndex = existingStartIndex + existingSaleCount;
        }

        tokenGatedSaleLists.count = _sales.length;
        tokenGatedSaleLists.currentStartId = newStartIndex;

        for (uint256 i = 0; i < _sales.length; i++) {
            tokenGatedSaleLists.tokenGatedSales[newStartIndex + i].saleConditions = _sales[i];
            tokenGatedSaleLists.tokenGatedSales[newStartIndex + i].minMintReq = _minMintReq[i];
            tokenGatedSaleLists.tokenGatedSales[newStartIndex + i].tokenGatedAddress = _tokenGatedAddress[i];
        }

        /**
         *  Gas refunds (as much as possible)
         *
         *  If `_resetSales == true`, we assign completely new UIDs to the sale
         *  conditions in `_sales`. So, we delete sale conditions with UID < `newStartIndex`.
         *
         *  If `_resetSales == false`, and there are more existing sale conditions
         *  than in `_sales`, we delete the existing sale conditions that don't get replaced
         *  by the conditions in `_sales`.
         */
        if (_resetSales) {
            for (uint256 i = existingStartIndex; i < newStartIndex; i++) {
                delete tokenGatedSaleLists.tokenGatedSales[i];
            }
        } else {
            if (existingSaleCount > _sales.length) {
                for (uint256 i = _sales.length; i < existingSaleCount; i++) {
                    delete tokenGatedSaleLists.tokenGatedSales[newStartIndex + i];
                }
            }
        }

        emit SaleConditionsUpdated(_sales);
    }

    /**
    @notice This function is used to reveal the token can only be called by owner  
    @dev TokensRevealed and URI event is emitted  
    */
    function revealTokens(string memory _uri) external onlyOwner {
        require(block.timestamp >= revealAfter, "Cannot reveal now");
        require(!revealed, "Already revealed");

        revealed = true;
        setBaseURI(_uri);
        emit TokensRevealed(block.timestamp);
        emit URI(_uri);
    }

    /**
    @notice Public function to withdraw minter funds  
    */
    function withdraw() external nonReentrant {
        require(msg.sender != address(0), "Withdraw: msg.sender to the zero address");
        release(payable(_msgSender()));
    }

    /**
    @notice The function is use to pause and unpause the mint   
    */
    function togglePause() external onlyOwner {
        if (paused()) {
            _unpause();
        } else {
            _pause();
        }
    }

    /**
    @notice This function is used to get amount of token bought by the address  
    @param _saleId Sale id to get data from    
    @param _userAddress User address to get about   
    */
    function getSaleTrackerValues(uint256 _saleId, address _userAddress) external view returns (uint256) {
        return saleLists.sales[_saleId].saleMintTracker[_userAddress];
    }

    /**
    @notice This function is used to get amount of token bought by the address  
    @param _saleId Sale id to get data from    
    */
    function getSaleConditions(uint256 _saleId, bool _isTokenGated) external view returns (SaleCondition memory) {
        if (_isTokenGated) {
            return tokenGatedSaleLists.tokenGatedSales[_saleId].saleConditions;
        } else {
            return saleLists.sales[_saleId].saleConditions;
        }
    }

    /**
    @notice Returns the chain id of the current blockchain  
    @dev This is used to workaround an issue with ganache returning different 
    *    values from the on-chain chainId() function  
    */
    function getChainID() external view returns (uint256) {
        uint256 id;
        assembly {
            id := chainid()
        }
        return id;
    }

    ////////////////
    ////Setters////
    //////////////

    /**
    @notice This function is used to set base URI  
    @param baseURI_ New Base URI  
    */
    function setBaseURI(string memory baseURI_) public onlyOwner {
        require(bytes(baseURI_).length > 0, "Invalid Base URI Provided");
        baseURI = baseURI_;
    }

    /**
    @notice This function is used to set designated signer  
    @param _signer New signer address    
    */
    function setDesignatedSigner(address _signer) external onlyOwner {
        require(_signer != address(0), "Invalid Address Provided");
        designatedSigner = _signer;
    }

    /**
    @notice This function is used to set max supply of collection  
    @param _supply New max supply     
    */
    function setMaxSupply(uint256 _supply) external onlyOwner {
        require(totalSupply() < _supply, "Total Supply Exceeding");
        maxSupply = _supply;
    }

    /**
    @notice This function is used to set owner cap    
    @param _cap New owner cap       
    */
    function setOwnerCap(uint256 _cap) external onlyOwner {
        ownerRemainingCap = _cap;
    }

    /**
    @notice This function is used to set reveal after duration value    
    @param _revealAfter New revealAfter     
    */
    function setRevealAfter(uint256 _revealAfter) external onlyOwner {
        revealAfter = _revealAfter;
    }

    ////////////////
    ///Overridden///
    ////////////////

    /**
    @notice This function is used to get first token id      
    */
    function _startTokenId() internal view virtual override returns (uint256) {
        return 1;
    }

    /**
    @notice This function is used to get base URI value     
    */
    function _baseURI() internal view virtual override returns (string memory) {
        return baseURI;
    }
}

