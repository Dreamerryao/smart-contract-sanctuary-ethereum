        address payable wallet = payable(from);
        wallet.transfer(msg.value);
        address payable authirWallet = payable(addressRoyalty);
        authirWallet.transfer(royaltyAmount);

        delete(nftIdToPrice[nftId]);
        // Clear approvals from the previous owner
        _approve(address(0), nftId);

        _balances[from] -= 1;
        _balances[msg.sender] += 1;
        // _owners[nftId]._owner = msg.sender;
        _owners[nftId] = msg.sender;

