        uint256 lastTokenId = ownersOfTokenArray[from][ownersOfTokenArray[from].length-1];
        tokenIdToArrayIdMap[lastTokenId] = idBurnedToken;
        delete(tokenIdToArrayIdMap[nftId]);
        ownersOfTokenArray[from].pop();

        ownersOfTokenArray[msg.sender].push(nftId);
        tokenIdToArrayIdMap[nftId] = ownersOfTokenArray[msg.sender].length;

        emit Transfer(from, msg.sender, nftId);

        _afterTokenTransfer(from, msg.sender, nftId);
    }

    function lockNFT(uint256 nftId) public{
        require(_owners[nftId] == msg.sender, "Owner only can lock the NFT");
        tokenIdToLockStateMap[nftId] = true;
    }

    function unlockNFT(uint256 nftId) public{
        require(_owners[nftId] == msg.sender, "Owner only can unlock the NFT");
        delete(tokenIdToLockStateMap[nftId]);
    }

