        require(_owners[nftId] == msg.sender, "Owner only can set the price");
        require((price/10000)*10000 == price, "Price is too small");
        nftIdToPrice[nftId] = price;
        return true;
    }

    function buy(uint256 nftId) public payable{
        require(nftIdToPrice[nftId] != 0, "The NFT is not in sale");
        uint256 royaltyAmount = (nftIdToPrice[nftId] * AUTHOR_FEE)/10000;
        require(nftIdToPrice[nftId] <= (msg.value + royaltyAmount), "Not enought eths");
        address from = _owners[nftId];
