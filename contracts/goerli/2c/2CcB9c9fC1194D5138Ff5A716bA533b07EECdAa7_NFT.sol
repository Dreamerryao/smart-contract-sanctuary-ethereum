        uint256 tokenId = currentTokenId.current();
        // require(tokenId < TOTAL_SUPPLY, "Max supply reached");
        require(numberOfTokens <= TOTAL_PURCHASE, "Can only mint 10 tokens at a time");
        require(numberOfTokens >= 1, "Can only mint 1 token and more at a time");
        require((tokenId + numberOfTokens) <= TOTAL_SUPPLY, "Purchase would exceed max supply of NFTs");
        require(msg.value >= MINT_PRICE*numberOfTokens, "Transaction value did not equal the mint price");
        require(mintIsActive == true, "Mint is not active");
        require(regAddressMap[msg.sender] == true, "The address should be registered");

