    }

    /**
     * @dev see "../docs/lazyminting.md" or {computeTokenId})
     */
    function tokenIdMatchesCreator(uint256 tokenId, address creatorAddress)
        internal
        pure
        returns (bool isCreator)
    {
        uint160 metadataSHA1 = (uint160)(tokenId >> 96);

        uint256 tokenSpecificCreatorIdentifier =
            (uint256)(keccak256(abi.encode(metadataSHA1, creatorAddress)));

        return
            tokenId & TOKEN_ID_CREATOR_SHORT_IDENTIFIER_BITMASK ==
            (tokenSpecificCreatorIdentifier >> 160) &
                TOKEN_ID_CREATOR_SHORT_IDENTIFIER_BITMASK;
    }

    function _transferToken(IBTZNFT nftContract, address owner, address buyer, uint256 nonce, uint256 tokenId, uint256 tokenAmount, uint256 fillAmount, bool alreadyMinted) 
        private 
        returns (uint8 transferType)
    {
        if (alreadyMinted) { 
            nftContract.exchangeTransfer(owner, buyer, tokenId, fillAmount);
            return 2;
        } 

        nftContract.exchangeMint(owner, buyer, tokenId, nonce, tokenAmount, fillAmount);
        return 1;
    }

    function _updateOrderDetail(
        OrderDetail memory orderDetail
    ) private {
        OrderDetail storage existingOrderDetail = _orders[orderDetail.nonce];
        if(existingOrderDetail.maker != address(0)) { 
            existingOrderDetail.remainingAmount = orderDetail.remainingAmount;
            existingOrderDetail.status = orderDetail.status;
            for(uint256 i = orderDetail.transactions.length; i < existingOrderDetail.transactions.length; i++) {
                existingOrderDetail.transactions.push(existingOrderDetail.transactions[i]);
            }        
            return;
        } 

        _orders[orderDetail.nonce].direction = orderDetail.direction;
        _orders[orderDetail.nonce].status = orderDetail.status;
        _orders[orderDetail.nonce].maker = orderDetail.maker;
        _orders[orderDetail.nonce].taker = orderDetail.taker;
        _orders[orderDetail.nonce].currency = orderDetail.currency;
        _orders[orderDetail.nonce].tokenId = orderDetail.tokenId;
        _orders[orderDetail.nonce].nonce = orderDetail.nonce;
        _orders[orderDetail.nonce].tokenAmount = orderDetail.tokenAmount;
        _orders[orderDetail.nonce].minimumPrice = orderDetail.minimumPrice;
        _orders[orderDetail.nonce].expires = orderDetail.expires;
        _orders[orderDetail.nonce].remainingAmount = orderDetail.remainingAmount;
        _orders[orderDetail.nonce].orderHash = orderDetail.orderHash;

        for(uint32 i = 0; i < orderDetail.transactions.length; i++) {
            _orders[orderDetail.nonce].transactions.push(orderDetail.transactions[i]);
        } 

        for(uint32 i=0; i<orderDetail.fees.length; i++){
            _orders[orderDetail.nonce].fees.push(orderDetail.fees[i]);
        }           
    }


    function _transferERC20(Order calldata order, address owner, address buyer, uint256 netTokenPrice) private {
        IERC20 token = IERC20(order.currency);
        token.safeTransferFrom(buyer, owner, netTokenPrice);

        for (uint i = 0; i < order.fees.length; i++) {
            Fee memory fee = order.fees[i];
            token.safeTransferFrom(buyer, fee.recipient, fee.amount);
        }
    }

    function _getNFTContract(address contractAddress) private view returns(IBTZNFT) {
        require(trustedNftContracts[contractAddress] == true, "BTZ: unknown nft contract");
        return IBTZNFT(contractAddress);
    }

    function _validateTokenStandard(string memory tokenStandard) private view returns (bytes32 tokenStandardHash) {
        tokenStandardHash = keccak256(bytes(tokenStandard));
        require(tokenStandardHash == ERC_721 || tokenStandardHash == ERC_1155, "BTZ: invalid token standard");
        return tokenStandardHash;
    }

    function _ensureTokenState(Order calldata order, IBTZNFT nftContract) 
        private 
        view 
        returns (bytes32 tokenStandardHash, bool alreadyMinted) 
    {
       tokenStandardHash = _validateTokenStandard(order.tokenStandard);
       MintDetail memory mintDetail = nftContract.getMintDetail(order.tokenId);

       if (mintDetail.owner == address(0)) {
           return (tokenStandardHash, false);
       }

       if (tokenStandardHash == ERC_721) {
           revert("BTZ: token already minted");
       }

       require(mintDetail.nonce == order.nonce, "BTZ: token already minted");
       return (tokenStandardHash, true);
    }

    function toAsciiString(address x) internal pure returns (string memory) {
    bytes memory s = new bytes(40);
    for (uint i = 0; i < 20; i++) {
        bytes1 b = bytes1(uint8(uint(uint160(x)) / (2**(8*(19 - i)))));
        bytes1 hi = bytes1(uint8(b) / 16);
        bytes1 lo = bytes1(uint8(b) - 16 * uint8(hi));
        s[2*i] = char(hi);
        s[2*i+1] = char(lo);            
    }
    return string(s);
    }

    function char(bytes1 b) internal pure returns (bytes1 c) {
        if (uint8(b) < 10) return bytes1(uint8(b) + 0x30);
        else return bytes1(uint8(b) + 0x57);
    }
