            require(order.maker == buyer, "BTZ: invalid maker");
        }

        require(
            tokenIdMatchesCreator(order.tokenId, owner),
            "BTZ: message sender does not own token id"
        );

        (, alreadyMinted) = _ensureTokenState(order, nftContract);

        orderDetail = getOrderDetail(order);
        require(
            orderDetail.status == 0,
            "BTZ: order is not fillable"
        );

        require(orderDetail.remainingAmount >= fillAmount, "BTZ: not enough remaining token amount");
        orderDetail.remainingAmount.sub(fillAmount);
        if(orderDetail.remainingAmount == 0) {
            orderDetail.status = 1;
        }

        orderDetail.transactions[orderDetail.transactions.length] = OrderTransaction(msg.sender, fillAmount);
        return (owner, buyer, orderDetail, alreadyMinted);
    }

    function _generateOrderDetail(
        Order calldata order,
        uint256 remainingTokenAmount
    ) private view returns (
       OrderDetail memory
    ) {
        uint8 status = 0;
        if(order.expires <= block.timestamp) {
            status = 3;
            remainingTokenAmount = 0;
        }

        bytes32 orderHash = _hash(order);
        OrderTransaction[] memory transactions;
        return OrderDetail(
            order.direction, 
            status,
            order.maker, 
            order.taker, 
            order.currency, 
            order.contractAddress,
            order.chainId,
            order.tokenId, 
            order.nonce, 
            order.tokenAmount, 
            order.minimumPrice, 
            order.expires,
            remainingTokenAmount,
            order.tokenStandard,
            orderHash,
            order.fees,
            transactions);
    }

    /**
     * @notice Call this function to find fees included minimum price of an order 
     * @param order The Order signed by the NFT creator
     */
    function calculateMinimumPrice(Order calldata order, uint256 fillAmount) public override view returns (uint256) {
       bytes32 tokenStandardHash = _validateTokenStandard(order.tokenStandard);

        require(
            tokenStandardHash == ERC_1155 || fillAmount == 1,
            "BTZ: fill amount must be 1 for ERC-721"
        );

        uint256 minimumPrice = order.minimumPrice;
        for (uint i = 0; i < order.fees.length; i++) {
           minimumPrice = minimumPrice.add(order.fees[i].amount);
        }

        return minimumPrice;
    }

    /**
      * @notice Call this function to add trusted nft contract address
