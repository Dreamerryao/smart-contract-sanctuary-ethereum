import "../node_modules/@openzeppelin/contracts/token/ERC721/utils/ERC721Holder.sol";
import "../node_modules/@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "../node_modules/@openzeppelin/contracts/access/Ownable.sol";

import "../node_modules/@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "../node_modules/@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "../node_modules/@openzeppelin/contracts/utils/Counters.sol";

contract CardMarket is ERC721Holder, Ownable {
    using Counters for Counters.Counter;

    Counters.Counter private _orderIdCounter;

    IERC20 private _moonaToken;
    IERC721 private _cardToken;
    uint256 public FEE = 0.005 ether;

    event Order(
        uint256 orderId,
        address indexed seller,
        uint256 tokenId,
        uint256 price
    );
    event Cancel(uint256 orderId, address indexed seller, uint256 tokenId);
    event Sold(
        uint256 orderId,
        address indexed seller,
        address indexed buyer,
        uint256 tokenId,
        uint256 price
    );
    event Withdraw(address indexed operator, address indexed to, uint256 value);

    struct CardOrder {
        uint256 orderId;
        address seller;
        address buyer;
        uint256 price;
        uint256 tokenId;
        bool isSold;
    }

    mapping(uint256 => CardOrder) private _orders;

    constructor(IERC20 moonaToken_, IERC721 cardToken_) {
        _moonaToken = moonaToken_;
        _cardToken = cardToken_;
    }

    function sale(uint256 _tokenId, uint256 _price)
        public
        payable
        returns (uint256)
    {
        require(msg.value == FEE, "Must pay the correct handling fee");
        _cardToken.safeTransferFrom(msg.sender, address(this), _tokenId);
        uint256 _orderId = _orderIdCounter.current();

        _orders[_orderId] = CardOrder(
            _orderId,
            msg.sender,
            address(0),
            _price,
            _tokenId,
            false
        );
        _orderIdCounter.increment();

        emit Order(_orderId, msg.sender, _tokenId, _price);

        return _orderId;
    }

    function buy(uint256 _orderId) public payable returns (uint256) {
        require(msg.value == FEE, "Must pay the correct handling fee");
        require(_orders[_orderId].isSold == false, "Order has been sold");
        require(_orders[_orderId].seller != msg.sender, "Sellers cannot purchase their own orders");

        require(
            _moonaToken.transferFrom(
                msg.sender,
                _orders[_orderId].seller,
                _orders[_orderId].price
            ),
            "Failed to transfer money from buyer's account"
        );

        _cardToken.safeTransferFrom(
            address(this),
            msg.sender,
            _orders[_orderId].tokenId
        );
        _orders[_orderId].isSold = true;
        _orders[_orderId].buyer = msg.sender;

        emit Sold(
            _orderId,
            _orders[_orderId].seller,
            _orders[_orderId].buyer,
            _orders[_orderId].tokenId,
            _orders[_orderId].price
        );

        return _orderId;
    }

    function cancel(uint256 _orderId) public returns (uint256) {
        require(_orderId < _orderIdCounter.current(), "OrderId does not exist");
        require(_orders[_orderId].seller == msg.sender, "Only the seller can cancel his order");
        require(_orders[_orderId].isSold == false, "Cannot cancel a filled order");

        _cardToken.safeTransferFrom(
            address(this),
            msg.sender,
            _orders[_orderId].tokenId
        );
        _orders[_orderId].buyer = msg.sender;
        _orders[_orderId].isSold = true;

        emit Cancel(_orderId, msg.sender, _orders[_orderId].tokenId);

        return _orderId;
    }

    function order(uint256 _orderId)
        public
        view
        returns (
            uint256,
            address,
            address,
            uint256,
            uint256,
            bool
        )
    {
        require(_orderId < _orderIdCounter.current(), "OrderId does not exist");

        return (
            _orderId,
            _orders[_orderId].seller,
            _orders[_orderId].buyer,
            _orders[_orderId].tokenId,
            _orders[_orderId].price,
            _orders[_orderId].isSold
        );
    }

    function total() public view returns(uint256){
        return _orderIdCounter.current();
    }

    function withdraw(address payable _to, uint256 _value) public onlyOwner {
        _to.transfer(_value);
        emit Withdraw(msg.sender, _to, _value);
    }
}

