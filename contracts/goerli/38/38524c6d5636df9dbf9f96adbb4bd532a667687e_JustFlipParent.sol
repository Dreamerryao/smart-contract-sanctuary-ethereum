  function deposit(bool side, uint256 amount) external requiresUnlock {
    //deposit amount must be more than 100 base units of deposit asset
    //in order to prevent revert from fee subtraction...
    //as fee calculation takes off a percentage of total deposit amount...
    require(amount > 100, 'deposit amount too small');
    require(ERC20(ASSET).balanceOf(msg.sender) >= amount, "Your token amount must be greater then you are trying to deposit");
    ERC20(ASSET).safeApprove(address(this), amount);
    ERC20(ASSET).safeTransferFrom(msg.sender, address(this), amount);
    //emit deposit event with amount deposited minus fee
    emit Deposit(msg.sender, side, subtractFeeFromDepositAmount(amount), block.number);
  }

  event WithdrawRequest(address user);
  event WithdrawSuccess(address user, uint256 amount);
  function withdraw() external requiresUnlock {

    emit WithdrawRequest(msg.sender);
    uint256 withdrawAmount = Parent.requestWithdraw(msg.sender);
    //code execution only gets to this part if safeTransfer in executeWithdraw() doesn't revert
    ERC20(ASSET).safeTransfer(msg.sender, withdrawAmount);
    //@dev config 'the graph' to listen to this event, and zero's funds upon event emission
    emit WithdrawSuccess(msg.sender, withdrawAmount);

  }

  //lock
  //failsafe function for admin 
  function emergencyLock() external requiresAuth {
    updateLockStatus(true);
  }

