import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/access/AccessControlEnumerable.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";

import "./IERC721Letta.sol";
import "./IERC721Marketplace.sol";

/**
 * @title ERC721Marketplace
 * ERC-721 Marketplace
 */

// TODO: also support pause for marketplace
// TODO: use Upgradable

contract ERC721Marketplace is
    ReentrancyGuard,
    Ownable,
    IERC721Marketplace,
    AccessControlEnumerable
{
    bytes32 public constant FACILITATOR_ROLE = keccak256("FACILITATOR_ROLE");

    using SafeMath for uint256;

    using Address for address payable;
    using Address for address;

    using ECDSA for bytes32;

    // bot address of the marketplace
    address payable bot;

    // ERC20 token to be used for payments
    IERC20 public payment_token;

    // commission rate is a value from 0 to 100
    uint256 commissionRate;

    // royalties commission rate is a value from 0 to 100
    uint256 royaltiesCommissionRate;

    // last price sold or auctioned
    mapping(uint256 => uint256) public soldFor;

    // Mapping from token ID to sell price in Ether or to bid price, depending if it is an auction or not
    mapping(uint256 => uint256) public sellBidPrice;

    //
    IERC721Letta public token;

    event Sale(
        uint256 indexed tokenId,
        address indexed from,
        address indexed to,
        uint256 value
    );
    event Commission(
        uint256 indexed tokenId,
        address indexed to,
        uint256 value,
        uint256 rate,
        uint256 total
    );
    event Royalty(
        uint256 indexed tokenId,
        address indexed to,
        uint256 value,
        uint256 rate,
        uint256 total
    );

    // Auction data
    struct Auction {
        // Parameters of the auction. Times are either
        // absolute unix timestamps (seconds since 1970-01-01)
        // or time periods in seconds.
        address payable beneficiary;
        // Current state of the auction.
        address payable highestBidder;
        uint256 highestBid;
        // Set to true at the end, disallows any change
        bool open;
        // minimum reserve price in wei
        uint256 reserve;
    }

    // mapping auctions for each tokenId
    mapping(uint256 => Auction) public auctions;

    // Events that will be fired on changes.
    event Refund(address bidder, uint256 amount);
    event HighestBidIncreased(
        address indexed bidder,
        uint256 amount,
        uint256 tokenId
    );
    event AuctionEnded(address winner, uint256 amount);

    constructor(
        IERC20 _payment_token,
        address payable _bot,
        uint256 _commissionRate,
        uint256 _royaltiesCommissionRate
    ) {
        bot = _bot;
        require(
            _commissionRate <= 100,
            "ERC721Marketplace: Commission rate has to be between 0 and 100"
        );
        commissionRate = _commissionRate;
        royaltiesCommissionRate = _royaltiesCommissionRate;
        payment_token = _payment_token;
        _grantRole(DEFAULT_ADMIN_ROLE, _msgSender());
        _grantRole(FACILITATOR_ROLE, _msgSender());
    }

    function hashMessage(address offerInitiator, uint256 offerAmount, uint tokenId) private pure returns (bytes32) {
        return keccak256(abi.encode(offerInitiator, offerAmount, tokenId));
    }

    function verifySignature(bytes32 messageHash, bytes memory signature, address signer) private pure returns (bool) {
        return signer == messageHash.toEthSignedMessageHash().recover(signature);
    }

    function offerFinalize(
        address to,
        uint256 amount,
        uint256 tokenId,
        bytes calldata signature
    ) public nonReentrant {
        address orgTokenOwner = token.ownerOf(tokenId);

        require(
            (orgTokenOwner == _msgSender() || bot == _msgSender()),
            "ERC721Marketplace: Only token owner or bot can finalize an offer"
        );

        bytes32 messageHash = hashMessage(to, amount, tokenId);
        require(verifySignature(messageHash, signature, to), "ERC721Marketplace: Offer not signed properly");

        require((amount > 0), "ERC721Marketplace: Offer cannot be zero price");

        // calculate amounts
        sellBidPrice[tokenId] = amount;
        uint256 amount4admin = sellBidPrice[tokenId].mul(commissionRate).div(
            100
        );
        uint256 amount4creator = sellBidPrice[tokenId]
            .mul(royaltiesCommissionRate)
            .div(100);
        uint256 amount4owner = sellBidPrice[tokenId].sub(amount4admin).sub(
            amount4creator
        );

        // to token owner
        require(
            payment_token.transferFrom(to, orgTokenOwner, amount4owner),
            "Transfer failed."
        );

        // to creator
        if (amount4creator > 0) {
            require(
                payment_token.transferFrom(
                    to,
                    token.creatorOf(tokenId),
                    amount4creator
                ),
                "Transfer failed."
            );
        }

        // to admin
        if (amount4admin > 0) {
            require(
                payment_token.transferFrom(to, address(this), amount4admin),
                "Transfer failed."
            );
        }

        soldFor[tokenId] = sellBidPrice[tokenId];

        // transfer ownership
        token.transferFrom(orgTokenOwner, to, tokenId);

        emit Sale(tokenId, orgTokenOwner, _msgSender(), sellBidPrice[tokenId]);
        emit Commission(
            tokenId,
            orgTokenOwner,
            sellBidPrice[tokenId],
            commissionRate,
            amount4admin
        );
        emit Royalty(
            tokenId,
            orgTokenOwner,
            sellBidPrice[tokenId],
            royaltiesCommissionRate,
            amount4creator
        );

        // close the sell
        sellBidPrice[tokenId] = 0;
    }

    function canSell(uint256 tokenId) public view returns (bool) {
        return (token.ownerOf(tokenId) == _msgSender() &&
            !auctions[tokenId].open);
    }

    // Sell option for a fixed price
    function sell(
        uint256 tokenId,
        uint256 price,
        address payable wallet
    ) public {
        require(
            isTokenApprovedForContract(tokenId),
            "ERC721Marketplace: The marketplace contract is not approved"
        );
        // only token owner
        require(
            token.ownerOf(tokenId) == _msgSender(),
            "ERC721Marketplace: Only token owner can sell this item"
        );

        // cannot set a price if auction is activated
        require(
            !auctions[tokenId].open,
            "ERC721Marketplace: Cannot sell an item which has an active auction"
        );

        // set sell price for index
        sellBidPrice[tokenId] = price;

        // Keep as we need to keep the interface of the function
        // set wallet payment
        wallet;
    }

    // simple function to return the price of a tokenId
    // returns: sell price, bid price, sold price, only one can be non zero
    function getPrice(uint256 tokenId)
        public
        view
        returns (
            uint256,
            uint256,
            uint256
        )
    {
        if (sellBidPrice[tokenId] > 0) return (sellBidPrice[tokenId], 0, 0);
        if (auctions[tokenId].highestBid > 0)
            return (0, auctions[tokenId].highestBid, 0);
        return (0, 0, soldFor[tokenId]);
    }

    function canBuy(uint256 tokenId) public view returns (uint256) {
        if (
            !auctions[tokenId].open &&
            sellBidPrice[tokenId] > 0 &&
            sellBidPrice[tokenId] > 0 &&
            token.getApproved(tokenId) == address(this)
        ) {
            return sellBidPrice[tokenId];
        } else {
            return 0;
        }
    }

    // Buy option
    function buy(uint256 tokenId) public nonReentrant {
        require(
            isTokenApprovedForContract(tokenId),
            "ERC721Marketplace: The marketplace contract is not approved"
        );
        // is on sale
        require(
            !auctions[tokenId].open && sellBidPrice[tokenId] > 0,
            "ERC721Marketplace: The collectible is not for sale"
        );

        // transfer ownership
        address orgTokenOwner = token.ownerOf(tokenId);

        require(
            _msgSender() != orgTokenOwner,
            "ERC721Letta: The seller cannot buy his own collectible"
        );

        // calculate amounts
        uint256 amount4admin = sellBidPrice[tokenId].mul(commissionRate).div(
            100
        );
        uint256 amount4creator = sellBidPrice[tokenId]
            .mul(royaltiesCommissionRate)
            .div(100);
        uint256 amount4owner = sellBidPrice[tokenId].sub(amount4admin).sub(
            amount4creator
        );

        // to token owner
        require(
            payment_token.transferFrom(
                _msgSender(),
                orgTokenOwner,
                amount4owner
            ),
            "Transfer failed."
        );

        // to creator
        if (amount4creator > 0) {
            require(
                payment_token.transferFrom(
                    _msgSender(),
                    token.creatorOf(tokenId),
                    amount4creator
                ),
                "Transfer failed."
            );
        }

        // to admin
        if (amount4admin > 0) {
            require(
                payment_token.transferFrom(
                    _msgSender(),
                    address(this),
                    amount4admin
                ),
                "Transfer failed."
            );
        }

        soldFor[tokenId] = sellBidPrice[tokenId];

        token.transferFrom(orgTokenOwner, _msgSender(), tokenId);

        emit Sale(tokenId, orgTokenOwner, _msgSender(), sellBidPrice[tokenId]);
        emit Commission(
            tokenId,
            orgTokenOwner,
            sellBidPrice[tokenId],
            commissionRate,
            amount4admin
        );
        emit Royalty(
            tokenId,
            orgTokenOwner,
            sellBidPrice[tokenId],
            royaltiesCommissionRate,
            amount4creator
        );

        // close the sell
        sellBidPrice[tokenId] = 0;
    }

    function canAuction(uint256 tokenId) public view returns (bool) {
        return (token.ownerOf(tokenId) == _msgSender() &&
            !auctions[tokenId].open &&
            sellBidPrice[tokenId] == 0);
    }

    // Instantiate an auction contract for a tokenId
    function createAuction(
        uint256 tokenId,
        address payable _beneficiary,
        uint256 _reservePrice
    ) public {
        require(
            !token.paused(),
            "ERC721Marketplace: The token contract is paused"
        );
        require(
            isTokenApprovedForContract(tokenId),
            "ERC721Marketplace: The marketplace contract is not approved"
        );
        require(
            sellBidPrice[tokenId] == 0,
            "ERC721Marketplace: The selected NFT is open for sale, cannot be auctioned"
        );
        require(
            !auctions[tokenId].open,
            "ERC721Marketplace: The selected NFT already has an auction"
        );
        require(
            hasRole(FACILITATOR_ROLE, _msgSender()),
            "ERC721Marketplace: Only facilitator can create auction for this item"
        );
        require(
            token.ownerOf(tokenId) == _msgSender(),
            "ERC721Marketplace: Only token owner can create auction for this item"
        );

        auctions[tokenId].beneficiary = _beneficiary;
        auctions[tokenId].reserve = _reservePrice;
        auctions[tokenId].open = true;
    }

    function canBid(uint256 tokenId) public view returns (bool) {
        if (
            !_msgSender().isContract() &&
            auctions[tokenId].open &&
            _msgSender() != token.ownerOf(tokenId) &&
            token.getApproved(tokenId) == address(this)
        ) {
            return true;
        } else {
            return false;
        }
    }

    /// Bid on the auction with the value sent
    /// together with this transaction.
    /// The value will only be refunded if the
    /// auction is not won.
    function bid(
        uint256 tokenId,
        address from,
        uint256 bid_value
    ) public nonReentrant {
        require(
            !token.paused(),
            "ERC721Marketplace: The token contract is paused"
        );
        require(
            isTokenApprovedForContract(tokenId),
            "ERC721Marketplace: The marketplace contract is not approved"
        );
        // Contracts cannot bid, because they can block the auction with a reentrant attack
        require(!from.isContract(), "No script kiddies");

        // auction has to be opened
        require(auctions[tokenId].open, "No opened auction found");

        // Revert the call if the bidding

        // If the bid is not higher, send the
        // money back.
        require(
            bid_value > auctions[tokenId].highestBid &&
                bid_value >= auctions[tokenId].reserve,
            "There already is a higher bid."
        );
        address orgTokenOwner = token.ownerOf(tokenId);
        require(
            from != orgTokenOwner,
            "ERC721Marketplace: The token owner cannot bid his own collectible"
        );

        require(
            (from == _msgSender() || bot == _msgSender()),
            "ERC721Marketplace: The bidder must be sender or bot"
        );

        // return the funds to the previous bidder, if there is one
        if (auctions[tokenId].highestBid > 0) {
            require(
                payment_token.transfer(
                    auctions[tokenId].highestBidder,
                    auctions[tokenId].highestBid
                ),
                "Transfer failed."
            );
            emit Refund(
                auctions[tokenId].highestBidder,
                auctions[tokenId].highestBid
            );
        }

        // now store the bid data
        auctions[tokenId].highestBidder = payable(from);

        // transfer tokens to contract
        require(
            payment_token.transferFrom(from, address(this), bid_value),
            "Transfer failed."
        );

        // register the highest bid value
        auctions[tokenId].highestBid = bid_value;

        emit HighestBidIncreased(from, bid_value, tokenId);
    }

    function canFinalize(uint256 tokenId) public view returns (bool) {
        if (
            auctions[tokenId].open &&
            (auctions[tokenId].highestBid >= auctions[tokenId].reserve ||
                auctions[tokenId].highestBid == 0)
        ) {
            return true;
        } else {
            return false;
        }
    }

    // implement the auctionFinalize including the NFT transfer logic
    function auctionFinalize(uint256 tokenId) public nonReentrant {
        require(
            !token.paused(),
            "ERC721Marketplace: The token contract is paused"
        );
        require(_msgSender() == bot, "Only bot can finalize auction");
        require(canFinalize(tokenId), "Cannot finalize");

        if (auctions[tokenId].highestBid > 0) {
            // transfer the ownership of token to the highest bidder
            address _highestBidder = auctions[tokenId].highestBidder;

            // calculate payment amounts
            uint256 amount4admin = auctions[tokenId]
                .highestBid
                .mul(commissionRate)
                .div(100);
            uint256 amount4creator = auctions[tokenId]
                .highestBid
                .mul(royaltiesCommissionRate)
                .div(100);
            uint256 amount4owner = auctions[tokenId]
                .highestBid
                .sub(amount4admin)
                .sub(amount4creator);

            // to token owner
            require(
                payment_token.transfer(
                    auctions[tokenId].beneficiary,
                    amount4owner
                ),
                "Transfer failed."
            );

            // to creator
            if (amount4creator > 0) {
                require(
                    payment_token.transfer(
                        token.creatorOf(tokenId),
                        amount4creator
                    ),
                    "Transfer failed."
                );
            }

            // No need handle to admin as contract still holds the amount

            emit Sale(
                tokenId,
                auctions[tokenId].beneficiary,
                _highestBidder,
                auctions[tokenId].highestBid
            );
            emit Royalty(
                tokenId,
                auctions[tokenId].beneficiary,
                auctions[tokenId].highestBid,
                royaltiesCommissionRate,
                amount4creator
            );
            emit Commission(
                tokenId,
                auctions[tokenId].beneficiary,
                auctions[tokenId].highestBid,
                commissionRate,
                amount4admin
            );

            // finalize the auction
            // Delete auctions here as in _beforeTokenTransfer the resetTokenStatus will be called, which will try to refund the amount to highest bidder
            delete auctions[tokenId];

            // transfer ownership
            address orgTokenOwner = token.ownerOf(tokenId);

            token.transferFrom(orgTokenOwner, _highestBidder, tokenId);

            soldFor[tokenId] = auctions[tokenId].highestBid;
        } else {
            // finalize the auction
            // This else is needed to also delete auctions[tokenId]
            delete auctions[tokenId];
        }

        emit AuctionEnded(
            auctions[tokenId].highestBidder,
            auctions[tokenId].highestBid
        );

        
    }

    // Bid query functions
    function highestBidder(uint256 tokenId)
        public
        view
        returns (address payable)
    {
        return auctions[tokenId].highestBidder;
    }

    function highestBid(uint256 tokenId) public view returns (uint256) {
        return auctions[tokenId].highestBid;
    }

    // withdraw contract's balance to admin
    function withdrawBalanceOfToken(uint256 _amount)
        public
        nonReentrant
        onlyOwner
    {
        require(
            payment_token.transfer(this.owner(), _amount),
            "Transfer failed."
        );
    }

    function setToken(IERC721Letta _token) public onlyOwner {
        token = _token;
    }

    // update contract fields
    function updateConfig(
        uint256 _commissionRate,
        uint256 _royaltiesCommissionRate,
        IERC20 _payment_token
    ) public onlyOwner {
        commissionRate = _commissionRate;
        royaltiesCommissionRate = _royaltiesCommissionRate;
        payment_token = _payment_token;
    }

    function updateBot(address payable _bot) public onlyOwner {
        bot = _bot;
    }

    function resetTokenStatus(uint256 tokenId) external override {
        sellBidPrice[tokenId] = 0;
        if (auctions[tokenId].highestBid > 0) {
            require(
                payment_token.transfer(
                    auctions[tokenId].highestBidder,
                    auctions[tokenId].highestBid
                ),
                "Transfer failed."
            );
            emit Refund(
                auctions[tokenId].highestBidder,
                auctions[tokenId].highestBid
            );
        }
        if (auctions[tokenId].open) {
            delete auctions[tokenId];
        }
    }

    function addFacilitator(address account) public onlyOwner {
        grantRole(FACILITATOR_ROLE, account);
    }

    function removeFacilitator(address account) public onlyOwner {
        revokeRole(FACILITATOR_ROLE, account);
    }

    function isFacilitator(address account) public view returns (bool) {
        return hasRole(FACILITATOR_ROLE, account);
    }

    function isTokenApprovedForContract(uint256 tokenId) internal view returns (bool) {
        return token.getApproved(tokenId) == address(this) || token.isApprovedForAll(token.ownerOf(tokenId), address(this));
    }
}

