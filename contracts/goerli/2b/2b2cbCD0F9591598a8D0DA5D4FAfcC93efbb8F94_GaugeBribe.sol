pragma solidity ^0.8.15;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/IERC20Metadata.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableMap.sol";
import "./interfaces/IMasterCashmere.sol";
import "./interfaces/IGaugeBribe.sol";

contract GaugeBribe is AccessControl, IGaugeBribe {
    using SafeERC20 for IERC20;
    using EnumerableMap for EnumerableMap.AddressToUintMap;
    using EnumerableSet for EnumerableSet.AddressSet;

    struct DistributionInfo {
        uint256 id;
        uint256 poolId;
        IERC20 token;
        uint256 startTime;
        uint256 finishTime;
        uint256 ratePerSecond;
        uint256 accTokenPerShare;
        uint256 accTokenPerFactorShare;
        uint256 lastRewardTimestamp;
        uint256 undistributedTokens;
        address creator;
    }

    struct UserInfo {
        uint256 amount;
        uint256 factor;
        uint256 rewardDebt;
    }

    IMasterCashmere public masterCashmere;
    mapping(uint256 => DistributionInfo) public distributions;
    mapping(uint256 => uint256) public poolDistributions;
    // distribution id => account => info
    // so it will reset when new distribution is started
    mapping(uint256 => mapping(address => UserInfo)) public userInfo;
    uint256 public distributionIds;

    event PoolUpdated(uint256 indexed pid);
    event RewardSent(uint256 indexed pid, address indexed account, IERC20 indexed token, uint256 amount);
    event TokensReclaimed(uint256 indexed distributionId, uint256 amount);

    constructor(IMasterCashmere masterCashmere_) {
        masterCashmere = masterCashmere_;

        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
    }

    function addDistribution(
        uint256 poolId,
        IERC20 token,
        uint256 duration,
        uint256 ratePerSecond
    ) external onlyRole(DEFAULT_ADMIN_ROLE) {
        require(poolId < masterCashmere.poolLength(), "!poolId");
        // todo: add distribution parameters check
        require(
            distributions[poolId].finishTime == 0 || block.timestamp > distributions[poolId].finishTime,
            "another distribution is active"
        );
        uint256 distributionId = distributionIds++;
        distributions[distributionId] = DistributionInfo({
            id: distributionId,
            poolId: poolId,
            token: token,
            startTime: block.timestamp,
            finishTime: block.timestamp + duration,
            ratePerSecond: ratePerSecond,
            accTokenPerShare: 0,
            accTokenPerFactorShare: 0,
            lastRewardTimestamp: block.timestamp,
            undistributedTokens: ratePerSecond * duration,
            creator: msg.sender
        });
        poolDistributions[poolId] = distributionId;
        token.safeTransferFrom(msg.sender, address(this), ratePerSecond * duration);
    }

    function pendingRewards(uint256 pid, address account) public view returns (uint256[] memory) {
        if (address(distributions[pid].token) == address(0)) return new uint256[](0);

        uint256[] memory ret = new uint256[](1);
        DistributionInfo storage distribution = distributions[poolDistributions[pid]];
        IMasterCashmere.PoolInfo memory poolInfo = masterCashmere.getPoolInfo(pid);
        UserInfo memory user = userInfo[distribution.id][account];
        uint256 accTokenPerShare = distribution.accTokenPerShare;
        uint256 accTokenPerFactorShare = distribution.accTokenPerFactorShare;
        uint256 lpSupply = poolInfo.lpToken.balanceOf(address(masterCashmere));
        if (block.timestamp > distribution.lastRewardTimestamp && lpSupply != 0) {
            uint256 secondsElapsed = (
                block.timestamp < distribution.finishTime ? block.timestamp : distribution.finishTime
            ) - distribution.lastRewardTimestamp;
            uint256 tokenReward = secondsElapsed * distribution.ratePerSecond;
            accTokenPerShare += (tokenReward * 1e12 * masterCashmere.dialutingRepartition()) / (lpSupply * 1000);
            if (poolInfo.sumOfFactors != 0)
                accTokenPerFactorShare +=
                    (tokenReward * 1e12 * masterCashmere.nonDialutingRepartition()) /
                    (poolInfo.sumOfFactors * 1000);
        }
        ret[0] = ((user.amount * accTokenPerShare + user.factor * accTokenPerFactorShare) / 1e12) - user.rewardDebt;
        return ret;
    }

    function rewardTokens(uint256 pid) public view returns (IERC20[] memory) {
        if (address(distributions[poolDistributions[pid]].token) == address(0)) return new IERC20[](0);

        IERC20[] memory ret = new IERC20[](1);
        ret[0] = distributions[poolDistributions[pid]].token;
        return ret;
    }

    function rewardTokensSymbols(uint256 pid) external view returns (string[] memory) {
        if (address(distributions[poolDistributions[pid]].token) == address(0)) return new string[](0);

        string[] memory ret = new string[](1);
        ret[0] = IERC20Metadata(address(distributions[poolDistributions[pid]].token)).symbol();
        return ret;
    }

    function onCsmReward(uint256 pid, address account) external returns (uint256[] memory) {
        if (address(distributions[poolDistributions[pid]].token) == address(0)) return new uint256[](0);

        _onPoolUpdate(pid);
        IERC20[] memory tokens = rewardTokens(pid);
        DistributionInfo storage distribution = distributions[poolDistributions[pid]];
        UserInfo storage user = userInfo[distribution.id][account];
        IMasterCashmere.UserInfo memory mcUser = masterCashmere.getUserInfo(pid, account);
        uint256[] memory rewards = pendingRewards(pid, account);
        if (rewards[0] > 0) {
            tokens[0].safeTransfer(account, rewards[0]);
            distribution.undistributedTokens -= rewards[0];
            emit RewardSent(pid, account, tokens[0], rewards[0]);
        }
        user.amount = mcUser.amount;
        user.factor = mcUser.factor;
        user.rewardDebt =
            (mcUser.amount * distribution.accTokenPerShare + mcUser.factor * distribution.accTokenPerFactorShare) /
            1e12;
        return rewards;
    }

    function _onPoolUpdate(uint256 pid) internal {
        DistributionInfo storage distribution = distributions[poolDistributions[pid]];
        if (distribution.startTime == 0) return;

        uint256 secondsElapsed = block.timestamp - distribution.lastRewardTimestamp;
        if (secondsElapsed == 0) return;

        IMasterCashmere.PoolInfo memory poolInfo = masterCashmere.getPoolInfo(pid);
        uint256 lpSupply = poolInfo.lpToken.balanceOf(address(masterCashmere));
        if (lpSupply == 0) {
            distribution.lastRewardTimestamp = block.timestamp;
            return;
        }

        uint256 tokenReward = secondsElapsed * distribution.ratePerSecond;
        distributions[pid].accTokenPerShare +=
            (tokenReward * 1e12 * masterCashmere.dialutingRepartition()) /
            (lpSupply * 1000);
        if (poolInfo.sumOfFactors == 0) distribution.accTokenPerFactorShare = 0;
        else
            distribution.accTokenPerFactorShare +=
                (tokenReward * 1e12 * masterCashmere.nonDialutingRepartition()) /
                (poolInfo.sumOfFactors * 1000);

        distribution.lastRewardTimestamp = block.timestamp;

        emit PoolUpdated(pid);
    }

    function onPoolUpdate(uint256 pid) external {
        _onPoolUpdate(pid);
    }

    function reclaimUndistributedTokens(uint256 distributionId) external {
        DistributionInfo storage distribution = distributions[distributionId];
        uint256 undistributedTokens = distribution.undistributedTokens;
        require(undistributedTokens > 0, "nothing to reclaim");
        require(block.timestamp > distribution.finishTime, "!finished");
        require(poolDistributions[distribution.poolId] != distributionId, "!replaced");

        distribution.token.safeTransfer(distribution.creator, undistributedTokens);
        distribution.undistributedTokens = 0;

        emit TokensReclaimed(distributionId, undistributedTokens);
    }
}

