  // The connext contract deployed on the same domain as this contract
  IRollupProcessor public Rollup;
  IWETH public WETH;


  constructor(IRollupProcessor _rollup, address _weth) {
    Rollup = _rollup;
    WETH = IWETH(_weth);
  }

  receive() external payable{}

