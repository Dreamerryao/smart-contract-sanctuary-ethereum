pragma solidity 0.8.11;



contract SharedWallet is Ownable {
    using Math for uint;

    struct Allowance {
        address target;
        uint amountAllowed;
        uint amountWithdrawn;
    }

    mapping (address => Allowance) allowances;

    // deposit [owner]
    receive() external payable onlyOwner {
        uint _balance = address(this).balance;
        require(_balance + msg.value > _balance, "Balance error");
        //payable(msg.sender).transfer(msg.value);
    }

    function availableBalance() public view returns(uint) {
        return address(this).balance;
    }

    // changeAllowance (address) [owner]
    function changeAllowance(address target, uint amountAllowed) public onlyOwner {
        allowances[target].target = target;
        allowances[target].amountAllowed = amountAllowed;
    }

    // withdraw [owner] -> everything
    //          [non-owner] -> depends on allowance
    function withdraw(uint _amount) public payable {
        uint _balance = address(this).balance;
        address payable _to = payable(msg.sender);
        require(_balance > _amount, "Not enough balance");
        uint _amountToTransfer = _balance.min(_amount);
        
        if (_to != owner()) {
            _amountToTransfer = _amountToTransfer.min(allowances[_to].amountAllowed - allowances[_to].amountWithdrawn);
            require(_amountToTransfer > 0, "Not enough allowance left");
            allowances[_to].amountWithdrawn = allowances[_to].amountWithdrawn + _amountToTransfer;
        }
        _to.transfer(_amountToTransfer);
    }
}