pragma solidity ^0.8.9;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract CryptoCrowd {
    using SafeMath for uint256;
    struct Campaign {
        address oracle;
        address payable owner;
        string title;
        string description;
        uint256 target;
        uint256 deadline;
        uint256 amountCollected;
        string image;
        address[] donators;
        uint256[] donations;
    }

    mapping(uint256 => Campaign) public campaigns;

    uint256 public numberOfCampaigns = 0;

    function createCampaign(
        address payable _owner,
        address _oracle,
        string memory _title,
        string memory _description,
        uint256 _target,
        uint256 _deadline,
        string memory _image
    ) public {
        // Check that the deadline is a future date
        require(
            _deadline > block.timestamp,
            "The deadline should be a future date."
        );

        // Check that the campaign target is greater than zero
        require(_target > 0, "The target must be greater than zero.");

        Campaign storage campaign = campaigns[numberOfCampaigns];

        // Initialize the campaign
        campaign.owner = _owner;
        campaign.oracle = _oracle;
        campaign.title = _title;
        campaign.description = _description;
        campaign.target = _target;
        campaign.deadline = _deadline;
        campaign.amountCollected = 0;
        campaign.image = _image;

        numberOfCampaigns++;
    }

    function donateToCampaign(uint256 _id) public payable {
        // Check that the campaign ID is valid
        require(_id < numberOfCampaigns, "Campaign not found.");

        Campaign storage campaign = campaigns[_id];

        // Check that the campaign deadline has not passed
        require(
            block.timestamp < campaign.deadline,
            "This campaign has already ended."
        );

        // Check that the donation amount is greater than zero
        require(
            msg.value > 0,
            "The donation amount must be greater than zero."
        );

        // Add the donation to the campaign
        campaign.donators.push(msg.sender);
        campaign.donations.push(msg.value);
        campaign.amountCollected += msg.value;

        // Transfer the donation to the campaign owner if the owner is a payable address
        if (isAddressPayable(campaign.owner)) {
            // Use transfer to send the funds and throw an exception if the transfer fails
            campaign.owner.transfer(msg.value);
        }
    }

    function isAddressPayable(address _addr) private view returns (bool) {
        uint256 balance = address(_addr).balance;
        return balance > 0;
    }

    function getDonators(uint256 _id)
        public
        view
        returns (address[] memory, uint256[] memory)
    {
        // Check that the campaign exists
        require(_id < numberOfCampaigns, "Campaign not found.");
        Campaign storage campaign = campaigns[_id];

        return (campaign.donators, campaign.donations);
    }

    function getCampaigns() public view returns (Campaign[] memory) {
        Campaign[] memory allCampaigns = new Campaign[](numberOfCampaigns);

        for (uint256 i = 0; i < numberOfCampaigns; i++) {
            allCampaigns[i] = campaigns[i];
        }

        return allCampaigns;
    }
}