// newPrompt: promptText, renderer
// { prediction data } -> { renderer } -> { svg }'

// prompt:
// { "" }

contract Prophecy is ERC721Base {
    using Counters for Counters.Counter;

    Counters.Counter private _responseIdCounter;
    Counters.Counter private _promptIdTracker;

    constructor() ERC721Base("Prophecy", "PROPH", 0.1 ether, 10_000) {
        _responseIdCounter.increment();
        _promptIdTracker.increment();
    }

    event NewPrompt(
        uint256 promptId,
        string prompt,
        address author,
        string metadata
    );
    event NewPromptResponse(
        uint256 promptId,
        uint256 responseId,
        string response,
        address author,
        string metadata
    );
    event NewPromptResolution(
        uint256 promptId,
        string promptResolution,
        address author,
        uint256[] successResponseIds
    );

    mapping(uint256 => string) private _prompts; // "when will we land on mars?"
    mapping(uint256 => string) private _promptMetadata; // json metadata
    mapping(uint256 => bool) private _promptResolved; // 1: true, 2: false
    mapping(uint256 => string) private _promptResolutions; // "2035
    mapping(uint256 => bool) private _promptResponseCameTrue; // 1: true, 2: false
    // mapping(uint256 => bool) private _localTimeZone;

    mapping(uint256 => string) private _responses; // "2025"
    mapping(uint256 => string) private _responseMetadata; // json metadata
    // todo; move to set/integer? +validation
    mapping(uint256 => uint256) private _responsePromptIdMap;

    // mapping(uint256 => string) private _responseTimezones;

    function render(uint256 tokenId) public view returns (string memory) {
        string memory resolutionSVG = "";
        string memory secondSeparatorSVG = "";
        string memory promptSVG = "";

        uint256 promptId = _responsePromptIdMap[tokenId];

        bool resolved = _promptResolved[promptId];

        string memory debugSVG = svg.text(
            string.concat(
                svg.prop("x", "20"),
                svg.prop("y", "260"),
                svg.prop("font-size", "14"),
                svg.prop("font-family", "Helvetica"),
                svg.prop("fill", "gray")
            ),
            string.concat(
                svg.cdata("Resolved: "),
                svg.cdata(resolved ? "true" : "false"),
                svg.cdata("; response: "),
                svg.cdata(utils.uint2str(tokenId)),
                svg.cdata("; prompt: "),
                svg.cdata(utils.uint2str(promptId))
            )
        );

        if (resolved) {
            if (_promptResponseCameTrue[tokenId]) {
                resolutionSVG = string.concat(
                    svg.text(
                        string.concat(
                            svg.prop("x", "20"),
                            svg.prop("y", "160"),
                            svg.prop("font-size", "14"),
                            svg.prop("font-family", "Helvetica"),
                            svg.prop("fill", "white")
                        ),
                        string.concat(svg.cdata("Update: you were right."))
                    ),
                    svg.text(
                        string.concat(
                            svg.prop("x", "20"),
                            svg.prop("y", "180"),
                            svg.prop("font-size", "14"),
                            svg.prop("font-family", "Helvetica"),
                            svg.prop("fill", "white")
                        ),
                        string.concat(svg.cdata(_promptResolutions[promptId]))
                    )
                );
            } else {
                resolutionSVG = string.concat(
                    svg.text(
                        string.concat(
                            svg.prop("x", "20"),
                            svg.prop("y", "160"),
                            svg.prop("font-size", "14"),
                            svg.prop("font-family", "Helvetica"),
                            svg.prop("fill", "white")
                        ),
                        string.concat(svg.cdata("Update: you were wrong"))
                    ),
                    svg.text(
                        string.concat(
                            svg.prop("x", "20"),
                            svg.prop("y", "180"),
                            svg.prop("font-size", "14"),
                            svg.prop("font-family", "Helvetica"),
                            svg.prop("fill", "white")
                        ),
                        string.concat(svg.cdata(_promptResolutions[promptId]))
                    )
                );
            }
        }

        if (_promptResolved[promptId]) {
            promptSVG = svg.text(
                string.concat(
                    svg.prop("x", "20"),
                    svg.prop("y", "100"),
                    svg.prop("font-size", "14"),
                    svg.prop("font-family", "Helvetica"),
                    svg.prop("fill", "gray")
                ),
                string.concat(svg.cdata(_responses[tokenId]))
            );
        } else {
            promptSVG = svg.text(
                string.concat(
                    svg.prop("x", "20"),
                    svg.prop("y", "100"),
                    svg.prop("font-size", "14"),
                    svg.prop("font-family", "Helvetica"),
                    svg.prop("fill", "white")
                ),
                string.concat(_responses[tokenId])
            );
        }

        string memory backgroundSVG = svg.rect(
            string.concat(
                svg.prop("x", "0"),
                svg.prop("y", "0"),
                svg.prop("width", "100%"),
                svg.prop("height", "100%"),
                svg.prop("fill", "black")
            )
        );

        if (resolved) {
            secondSeparatorSVG = svg.rect(
                string.concat(
                    svg.prop("fill", "gray"),
                    svg.prop("y", "125"),
                    svg.prop("x", "20"),
                    svg.prop("width", utils.uint2str(250)),
                    svg.prop("height", utils.uint2str(1))
                ),
                utils.NULL
            );
        } else {
            secondSeparatorSVG = "";
        }

        string memory svgString = string.concat(
            "<svg xmlns='http://www.w3.org/2000/svg' width='300' height='300' style='background:#000'>",
            backgroundSVG,
            svg.text(
                string.concat(
                    svg.prop("x", "110"),
                    svg.prop("y", "40"),
                    svg.prop("font-size", "18"),
                    svg.prop("font-family", "Helvetica"),
                    svg.prop("fill", "white")
                ),
                string.concat(svg.cdata("Prophecy"))
            ),
            svg.rect(
                string.concat(
                    svg.prop("fill", "gray"),
                    svg.prop("y", "65"),
                    svg.prop("width", utils.uint2str(300)),
                    svg.prop("height", utils.uint2str(1))
                ),
                utils.NULL
            ),
            debugSVG,
            promptSVG,
            secondSeparatorSVG,
            resolutionSVG,
            svg.text(
                string.concat(
                    svg.prop("x", "20"),
                    svg.prop("y", "280"),
                    svg.prop("font-size", "14"),
                    svg.prop("font-family", "Helvetica"),
                    svg.prop("fill", "gray")
                ),
                string.concat(svg.cdata("Propecy minted block.number"))
            ),
            "</svg>"
        );

        string memory output = "";

        output = "data:image/svg+xml;base64,";
        output = string(
            abi.encodePacked(output, Base64.encode(abi.encodePacked(svgString)))
        );

        string memory json = Base64.encode(
            bytes(
                string(
                    abi.encodePacked(
                        '{"name": "Prophecy", "description": "https://prophecy.market by https://new-world-labs.com", "image": "',
                        output,
                        '"}'
                    )
                )
            )
        );

        output = string(
            abi.encodePacked("data:application/json;base64,", json)
        );

        return output;
    }

    function safeMint(
        uint256 promptId,
        string memory responseText,
        string memory metadata
    ) external {
        require(_promptIdTracker.current() > 0, "no prompts have been created");

        // todo: block predictions on resolved prompts

        uint256 responseId = _responseIdCounter.current();

        _responses[responseId] = responseText;
        _responsePromptIdMap[responseId] = promptId;
        _responseMetadata[responseId] = metadata;

        _responseIdCounter.increment();

        emit NewPromptResponse(
            promptId,
            responseId,
            responseText,
            msg.sender,
            metadata
        );

        _safeMint(_msgSender(), 1);
    }

    function createPrompt(string memory promptText, string memory metadata)
        external
        onlyOwner
    {
        uint256 promptId = _promptIdTracker.current();
        _promptMetadata[promptId] = metadata;
        _prompts[promptId] = promptText;
        _promptIdTracker.increment();

        emit NewPrompt(promptId, promptText, msg.sender, metadata);
    }

    function getCurrentPrompt() external view returns (string memory) {
        return _prompts[_promptIdTracker.current() - 1];
    }

    function getCurrentPromptId() external view returns (string memory) {
        return utils.uint2str(_promptIdTracker.current() - 1);
    }

    function resolvePrompt(
        uint256 promptId,
        uint256[] memory correctTokenIds,
        string memory resolutionText
    ) external onlyOwner {
        _promptResolved[promptId] = true;
        _promptResolutions[promptId] = resolutionText;

        for (uint256 i = 0; i < correctTokenIds.length; i++) {
            _promptResponseCameTrue[correctTokenIds[i]] = true;
        }

        emit NewPromptResolution(
            promptId,
            resolutionText,
            msg.sender,
            correctTokenIds
        );
    }

    // tokenURI function
    function tokenURI(uint256 tokenId)
        public
        view
        override
        returns (string memory)
    {
        return render(tokenId);
    }
}

