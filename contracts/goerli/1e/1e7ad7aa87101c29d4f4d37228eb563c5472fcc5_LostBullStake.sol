contract LostBullStake is Ownable, ReentrancyGuard {
    using SafeMath for uint256;


    IERC20 public token;

    struct Staker {
        bool staking;
        uint256 tier;
        uint256 tokenStakedAt;
        uint256 amount;
        
    }

    mapping(address => Staker) public staker;
   

    uint256 public firsttier = 30; //2629743 = 1 month
    uint256 public secondtier = 60; //5259486 = 2 month
    uint256 public thirdtier = 90; //7889229 = 3 month
    uint256 public fourthtier = 120;

    uint256 public firstrate = 1;
    uint256 public secondrate = 2;
    uint256 public thirdrate = 3;
    uint256 public fourthrate = 4;


    uint256 public totalStaked; 

    constructor(address _token)  {
        token = IERC20(_token);
    }

    

    function stake(uint256 _tier, uint256 _amount) external {
        token.transferFrom(msg.sender, address(this), _amount);

        
        
            staker[msg.sender].staking = true;
            staker[msg.sender].tier = _tier;
            staker[msg.sender].tokenStakedAt = block.timestamp;
            staker[msg.sender].amount = _amount;
        
        
        
        totalStaked = totalStaked + _amount;
    }

    function calculateTokens() public view returns (uint256) {
        uint256 timeElapsed = block.timestamp - staker[msg.sender].tokenStakedAt;
        return timeElapsed;
    }

    function unstake() external nonReentrant {
        require(staker[msg.sender].staking == true, "You have nothing staked!");
        uint256 time = calculateTokens();
        uint256 payout = staker[msg.sender].amount;
        uint256 tier = staker[msg.sender].tier;
        if(tier == 1) {
            require(time >= firsttier, "Staking period has not ended");
            token.transfer(msg.sender, payout.mul(firstrate));
        }
        else if (tier == 2) {
            require(time >= secondtier, "Staking period has not ended");
            payout.mul(secondrate);
            token.transfer(msg.sender, payout.mul(secondrate));
        }
        else if (tier == 3) {
            require(time >= thirdtier, "Staking period has not ended");
            payout.mul(thirdrate);
            token.transfer(msg.sender, payout.mul(thirdrate));
        }
        else if (tier == 4){
            require(time >= fourthtier, "Staking period has not ended");
            payout.mul(fourthrate);
            token.transfer(msg.sender, payout.mul(fourthrate));
        }
        else {
            revert("incorrect tier");
        }
        delete staker[msg.sender];
        totalStaked = totalStaked - payout;
        
         
        
    }
    
        

  
  function setTokenAddress(address _newToken) external onlyOwner {
      token = IERC20(_newToken);
  }


    function setFirstTier(uint256 _time) external onlyOwner {
        firsttier = _time;
    }
    function setSecondTier(uint256 _time) external onlyOwner {
        secondtier = _time;
    }
    function setThirdTier(uint256 _time) external onlyOwner {
        thirdtier = _time;
    }

    function setFourthTier(uint256 _time) external onlyOwner {
        fourthtier = _time;
    }

    function setFirstRate(uint256 _newRate) external onlyOwner {
        firstrate = _newRate;
    }

    function setSecondRate(uint256 _newRate) external onlyOwner {
        secondrate = _newRate;
    }

    function setThirdRate(uint256 _newRate) external onlyOwner {
        thirdrate = _newRate;
    }

    function setFourthRate(uint256 _newRate) external onlyOwner {
        fourthrate = _newRate;
    }

    receive() external payable {}
}