        require(block.timestamp > timelockPeriodTimeStamp, "not yet"); // Lock Period of 1 year

        
        // if it's been more than 2 years, release all tokens
        if(block.timestamp > one_year + timelockPeriodTimeStamp) {
            amount = balanceOf(msg.sender);
        } else {
            uint256 total = alreadyWithdrawn[msg.sender] + balanceOf(msg.sender);
            uint256 vested = total * (block.timestamp - timelockPeriodTimeStamp) / one_year;
            amount = vested - alreadyWithdrawn[msg.sender];
        }

        alreadyWithdrawn[msg.sender] = alreadyWithdrawn[msg.sender] + amount;
        
        _burn(msg.sender, amount);
        IERC20(DEEP).transfer(msg.sender, amount);
    }

     /// @notice Claim bonus tokens, 30 days after fundraising is over
     /// @dev The bonus tokens are locked for lockPeriod after fundraising is over
    function claimBonus() public isFundraisingOver {
        uint256 lockPeriod = isInfluencer[msg.sender] ? lockPeriodInfluencer : lockPeriodUser;

        require(fundraisingOverTime + lockPeriod < block.timestamp, "bonus period have not passed yet");
        
        uint256 bonusAmount = bonusOf[msg.sender];
        bonusOf[msg.sender] = 0;
        _burn(msg.sender, bonusAmount);
        IERC20(DEEP).transfer(msg.sender, bonusAmount);
        emit Claim(msg.sender, bonusAmount);        
    }

    // INTERNAL FUNCTIONS
    function calcBonus(uint256 amount) internal view returns(uint256) {
        return amount * bonus / 100;
    }


    // VIEW FUNCTIONS

    /// @notice Get the amount of tokens sold by a referral
    /// @param _referralId The referral id
    /// @return The amount of tokens sold by the referral
    function referralAmount(bytes32 _referralId) external view returns(uint256) {
        return referral[_referralId];
    }

    /// @notice Get the amount of tokens remaining to be sold
    /// @return The amount of tokens remaining to be sold
    function remainingTokens() public view returns(uint256) {
        return ERC20(DEEP).balanceOf(address(this)) - totalTokensSold;
    }


    // OWNER FUNCTIONS

    ///  @notice Transfer tokens from the contract to the owner, can only by called by owner
    ///  @param token The token address
    ///  @param recipient The recipient address
    ///  @param balance The amount of tokens to be transferred
    function transferTokens(
        address token,
        address recipient,
        uint256 balance
    ) public onlyOwner {
        IERC20(token).transfer(recipient, balance);
    }

    /// @notice Close fundraising, can only be called by owner
    function closeFundraising() public onlyOwner{
        // this can be called only by owner
        // this function toggles the fundraising status, so it can be used to re-open it again
        fundraisingStatus = true;
        fundraisingOverTime = block.timestamp;
    }

    /// @notice Set the details of influencer's addresses & referral ids
    /// @param _influencer The array of influencer's addresses
    /// @param _referralId The array of referral ids
    function setReferral(address[] memory _influencer, bytes32[] memory _referralId) public onlyOwner {
        for(uint i=0; i<_influencer.length; i++){
            influencers[_referralId[i]] = _influencer[i];
            isInfluencer[_influencer[i]] = true;
        }
    }

    /// @notice Set the whitelisted address and their amount 
    /// @param users The array of whitelisted addresses
    /// @param amounts The array of whitelisted amounts
    function setWhitelist(address[] memory users, uint[] memory amounts) public onlyOwner {
        for(uint i=0; i<users.length; i++){
            _mint(users[i], amounts[i] * 2);
            isWhiteListed[users[i]] = true;
            totalTokensSold = totalTokensSold + amounts[i] * 2;
        }
    }

    // OVERRIDE FUNCTIONS
    /// @dev This function is used to prevent the tokens from being transferred to any other address except the stacking contract
    function _beforeTokenTransfer(
        address from,
        address to,
        uint256 amount
    ) internal override {
        // This line still allows mint and burn to happen with no restrictions
        if(from == address(0) || to == address(0)) return;
        // if fundraising is over, then the tokens can be transferred to any address
        if(fundraisingStatus) revert NonTransferrableTokens();
    }
