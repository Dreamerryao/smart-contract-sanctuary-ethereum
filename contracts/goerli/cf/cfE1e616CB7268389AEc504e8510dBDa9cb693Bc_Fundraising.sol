        USDC = _USDC;
        USDT = _USDT;
        DEEP = _DEEP;
        stackingAddress = _stackingAddress;
        bonus = _bonus;
        lockPeriodUser = _lockPeriodUser;
        lockPeriodInfluencer = _lockPeriodInfluencer;
