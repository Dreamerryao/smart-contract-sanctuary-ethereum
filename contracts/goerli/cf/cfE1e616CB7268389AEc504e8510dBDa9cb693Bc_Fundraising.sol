        address _DAI, 
        address _USDC,
        address _USDT,
        address _DEEP,
        address _stackingAddress,
        uint256 _bonus,
        uint256 _lockPeriodUser,
        uint256 _lockPeriodInfluencer,
        uint256 _bonusPeriodEnds
    ) initializer public {
