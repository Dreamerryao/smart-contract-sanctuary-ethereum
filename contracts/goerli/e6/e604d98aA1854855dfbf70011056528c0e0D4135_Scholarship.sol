contract Scholarship {


mapping (address =>mapping(uint256 => address))  scholarshipData;

event scholarshipAwarded(address scholar,address nftContract,uint256 tokenId);
event scholarshipCancel(address scholar,address nftContract,uint256 tokenId);



function getScholarship(uint256 tokenId,address scholar, address nftContract) public {

        IERC721 tokenRegistry = IERC721(nftContract);
        require(tokenRegistry.ownerOf(tokenId)==msg.sender,"youare not oowner");
        require(scholarshipData[nftContract][tokenId] ==0x0000000000000000000000000000000000000000,"already given");
        scholarshipData[nftContract][tokenId]=scholar;

    emit scholarshipAwarded(scholar,nftContract,tokenId);
}

function removeScholar(uint256 tokenId,address scholar, address nftContract) public {

        IERC721 tokenRegistry = IERC721(nftContract);
        require(tokenRegistry.ownerOf(tokenId)==msg.sender,"youare not oowner");
        require(scholarshipData[nftContract][tokenId] ==scholar ,"scholar does not exist");
        delete scholarshipData[nftContract][tokenId];
    emit scholarshipCancel(scholar,nftContract,tokenId);


}

function checkstatus (uint256 tokenId, address nftContract) public view returns(address) {

   address scholar =scholarshipData[nftContract][tokenId];
