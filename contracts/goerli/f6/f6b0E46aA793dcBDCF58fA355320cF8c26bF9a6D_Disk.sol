pragma solidity 0.8.13;

import "@rari-capital/solmate/src/tokens/ERC721.sol";
import "@rari-capital/solmate/src/utils/ReentrancyGuard.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/Strings.sol";
import "@openzeppelin/contracts/utils/Counters.sol";

import "@openzeppelin/contracts/interfaces/IERC2981.sol";

interface IPack {
    function burnFromRender(address from, uint256[] memory tokenIds) external;
}

contract Disk is ERC721, Ownable, ReentrancyGuard, IERC2981 {
    using Strings for uint256;
    using Counters for Counters.Counter;

    Counters.Counter private _tokenIds;
    mapping(address => bool) public allowedPackContracts;
    mapping(address => bool) public allowedRenderContracts;
    BaseUriRange[] baseUriRanges;
    string public baseUri;
    address payable public withdrawalAddress;
    bool public mintingOpen = false;
    uint256 public royaltyFeeBp = 750;

    struct MemoryComponents {
        address contractAddress;
        uint256[] tokenIds;
    }

    struct BaseUriRange {
        string baseUri;
        uint256[2] tokenIdRange;
    }

    constructor(string memory _baseUri) ERC721("Disk", "DISK") {
        baseUri = _baseUri;
        // Start tokenId at 1
        _tokenIds.increment();
    }

    // Helpers
    modifier isMintingOpen() {
        require(mintingOpen, "Minting is not open");
        _;
    }

    function tokenURI(uint256 tokenId)
        public
        view
        override
        returns (string memory)
    {
        require(this.ownerOf(tokenId) != address(0), "NOT_MINTED");

        for (uint256 i = 0; i < baseUriRanges.length; ++i) {
            BaseUriRange memory range = baseUriRanges[i];
            if (
                tokenId >= range.tokenIdRange[0] &&
                tokenId <= range.tokenIdRange[1]
            ) {
                return
                    string(abi.encodePacked(range.baseUri, tokenId.toString()));
            }
        }

        return string(abi.encodePacked(baseUri, tokenId.toString()));
    }

    function mintFromPack(address to) external isMintingOpen {
        require(
            allowedPackContracts[msg.sender],
            "Not an allowed pack contract"
        );
        uint256 newTokenId = _tokenIds.current();

        _mint(to, newTokenId);
        _tokenIds.increment();
    }

    function burnFromRender(address from, uint256 tokenId) external {
        require(
            allowedRenderContracts[msg.sender],
            "Not an allowed render contract"
        );
        require(this.ownerOf(tokenId) == from, "Do not own token");

        _burn(tokenId);
    }

    function royaltyInfo(uint256 tokenId, uint256 salePrice)
        external
        view
        override
        returns (address receiver, uint256 royaltyAmount)
    {
        return (withdrawalAddress, (salePrice * royaltyFeeBp) / 10000);
    }

    function supportsInterface(bytes4 interfaceId)
        public
        pure
        virtual
        override(ERC721, IERC165)
        returns (bool interfaceSupported)
    {
        return
            interfaceId == type(IERC2981).interfaceId ||
            super.supportsInterface(interfaceId);
    }

    // Admin functions
    function setMintingOpen(bool _mintingOpen) external onlyOwner {
        mintingOpen = _mintingOpen;
    }

    function setAllowedPackContract(address addr) external onlyOwner {
        allowedPackContracts[addr] = true;
    }

    function removeAllowedPackContract(address addr) external onlyOwner {
        delete allowedPackContracts[addr];
    }

    function setAllowedRenderContract(address addr) external onlyOwner {
        allowedRenderContracts[addr] = true;
    }

    function removeAllowedRenderContract(address addr) external onlyOwner {
        delete allowedRenderContracts[addr];
    }

    function setBaseUri(string memory _baseUri) external onlyOwner {
        baseUri = _baseUri;
    }

    function setBaseUriRanges(BaseUriRange[] memory _baseUriRanges)
        external
        onlyOwner
    {
        delete baseUriRanges;
        for (uint256 i = 0; i < _baseUriRanges.length; ++i) {
            BaseUriRange memory _baseUriRange = _baseUriRanges[i];
            BaseUriRange memory baseUriRange = BaseUriRange({
                baseUri: _baseUriRange.baseUri,
                tokenIdRange: _baseUriRange.tokenIdRange
            });
            baseUriRanges.push(baseUriRange);
        }
    }

    function setWithdrawalAddress(address payable _withdrawalAddress)
        external
        onlyOwner
    {
        withdrawalAddress = _withdrawalAddress;
    }

    function withdrawEth() external {
        (bool sent, ) = withdrawalAddress.call{value: address(this).balance}(
            ""
        );
        require(sent, "send failed");
    }
}