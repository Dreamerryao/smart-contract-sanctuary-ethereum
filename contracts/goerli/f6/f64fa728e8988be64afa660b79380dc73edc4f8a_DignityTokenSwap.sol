pragma solidity ^0.8.0;





interface IDignityToken is IERC20Metadata {
    function mint(address, uint256) external;
}

contract DignityTokenSwap is Ownable {
    using Strings for uint256;    
    AggregatorV3Interface internal priceFeed;    
    IDignityToken public dignityToken;
    
    event Deposit(
        address indexed from,        
        uint value
    );

    event Mint(
        address indexed to,
        uint value
    );    
    
    // price in StableCoin (ERC20)
    mapping(address => uint256) public tokensMap;        
    uint coinPrice;    
    bool public paused = false;

    constructor(address _dignityToken, address _stable, uint8 _cost) {
                      
        dignityToken = IDignityToken(_dignityToken);        
        coinPrice = _cost;
        addTokenToSupportList(IERC20(_stable), _cost);
        
        // dignityToken = IDignityToken(0xd9145CCE52D386f254917e481eB44e9943F39138);
        // // USbC address, cost per DT      
        // // input in.  USDC (wei) / DT (wei) 
        // addTokenToSupportList(IERC20(0xd8b934580fcE35a11B58C6D73aDeE468a2833fa8), 10);
        // coinPrice = 10;

        priceFeed = AggregatorV3Interface(0xD4a33860578De61DBAbDc8BFdb98FD742fA7028e);
        
    }

    function addTokenToSupportList(
        IERC20 _paytoken,
        uint256 _payCostPerDT
    ) public onlyOwner {        
        tokensMap[address(_paytoken)] = _payCostPerDT;
    }

    fallback() external payable {
        emit Deposit(msg.sender, msg.value);
    }

    function pause(bool _state) public onlyOwner() {
        paused = _state;
    }

    function swap() public payable {
        
        require(!paused);
        require(msg.value > 0,  "Invalid amount");

        // Goerli
        // uint256 etherPriceUSD = 130962000000;
        // uint8 etherPriceDecimals = 8;
        int etherPriceUSD = getLatestPrice();    
        uint8 etherPriceDecimals = priceFeed.decimals();        
        require(etherPriceUSD > 0, "Invalid USD price");

        uint8 etherDecimals = 18;
        uint8 dtDecimals = dignityToken.decimals();
        
        uint256 costUSD = (msg.value * uint256(etherPriceUSD)) / (10**etherPriceDecimals);
        uint256 amount = costUSD / coinPrice;
        // convert wei to DT decimals
        uint256 dtAmount = amount / (10**(etherDecimals-dtDecimals));

        // Mint
        dignityToken.mint(msg.sender, dtAmount);
    }

    // token's amount in wei
    function swapToken(address _token, uint256 _amount) public {
        
        require(!paused);
        
        IERC20Metadata paytoken = IERC20Metadata(_token);        
        uint256 cost = tokensMap[_token];   // cost in USD
        uint8 tokenDecimals = paytoken.decimals();
        uint8 dtDecimals = dignityToken.decimals();
        
        emit Deposit(msg.sender, _amount);        
        uint256 amount = _amount / cost;         
        uint256 dtAmount = amount / (10**(tokenDecimals -  dtDecimals));

        // TODO: use dtAmount to calculate _amount deposit
        paytoken.transferFrom(msg.sender, address(this), _amount);
        
        emit Mint(msg.sender, dtAmount);        
        dignityToken.mint(msg.sender, dtAmount);
    }

    function getLatestPrice() public view returns (int) {
        (
            /*uint80 roundID*/,
            int price,
            /*uint startedAt*/,
            /*uint timeStamp*/,
            /*uint80 answeredInRound*/
        ) = priceFeed.latestRoundData();
        return price;
    }

    function withdraw() public onlyOwner() {       
        uint256 balance = address(this).balance;
        payable(owner()).transfer(balance);
    }        

    function withdrawToken(address _token) public onlyOwner() {            
        IERC20 paytoken = IERC20(_token);        
        paytoken.transfer(msg.sender, paytoken.balanceOf(address(this)));
    }
}