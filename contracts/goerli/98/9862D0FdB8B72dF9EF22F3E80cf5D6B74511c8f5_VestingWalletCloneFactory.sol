pragma solidity ^0.8.4;

import {VestingWalletClone} from "./VestingWalletClone.sol";
import {ClonesWithImmutableArgs} from "../clones/ClonesWithImmutableArgs.sol";

contract VestingWalletCloneFactory {
    using ClonesWithImmutableArgs for address;

    VestingWalletClone public implementation;

    constructor(VestingWalletClone implementation_) {
        implementation = implementation_;
    }

    function setImplementation(VestingWalletClone _implementation) external {
        implementation = _implementation;
    }

    function createClone(address beneficiary) external returns (VestingWalletClone clone) {
        bytes memory data = abi.encodePacked(beneficiary, block.timestamp);
        clone = VestingWalletClone(payable(address(implementation).clone(data)));
    }
}

