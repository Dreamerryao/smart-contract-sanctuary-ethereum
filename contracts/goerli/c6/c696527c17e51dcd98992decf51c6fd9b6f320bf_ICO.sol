pragma solidity 0.8.17;

import "./SpaceCoin.sol";

/// @author Cameron Askew
/// @notice ICO base conract
contract ICO {

    // events
    event SpaceCoinCreated(address contractAddress);
    event PhaseChange(Phase phase);
    event PrivateInvestorApproved(address investor);
    event Investment(address investor, uint amount);
    event SpaceCoinRedeemed(address investor, uint amount);
    event PauseToggled(bool paused);

    // errors
    error InvalidPhase();
    error OnlyOwner();
    error OnlyPrivateInvestors();
    error TotalLimitExceeded();
    error IndividualLimitExceeded();
    error Paused();
    error NoFunds();

    enum Phase { Seed, General, Open }

    // constants
    uint private constant SPC_PER_ETH = 5;
    uint private constant SEED_INDIVIDUAL_INVEST_LIMIT = 1_500 ether;
    uint private constant SEED_TOTAL_INVEST_LIMIT = 15_000 ether;
    uint private constant GENERAL_INDIVIDUAL_INVEST_LIMIT = 1_000 ether;
    uint private constant TOTAL_INVEST_LIMIT = 30_000 ether;

    // immutable
    address immutable private owner;
    address immutable private treasury;
    SpaceCoin immutable private spaceCoin;

    // state
    Phase internal phase = Phase.Seed;
    bool private paused = false;
    mapping(address => uint) private unredeemedInvestments;
    mapping(address => bool) private privateInvestors;

    modifier onlyOwner {
        if (msg.sender != owner) revert OnlyOwner();
        _;
    }

    constructor(address _owner, address _treasury) {
        owner = _owner;
        treasury = _treasury;
        spaceCoin = new SpaceCoin(address(this), _treasury);
        emit SpaceCoinCreated(address(spaceCoin));
    }

    /// @notice advance ICO to the next phase
    function advancePhase() external onlyOwner {
        if (phase == Phase.Open) revert InvalidPhase();

        if (phase == Phase.Seed) {
            phase = Phase.General;
        } else if (phase == Phase.General) {
            phase = Phase.Open;
        }

        emit PhaseChange(phase);
    }

    /// @notice approve a private investor during the Seed phase
    function approvePrivateInvestor(address investor) external onlyOwner {
        if (phase != Phase.Seed) revert InvalidPhase();
        privateInvestors[investor] = true;

        emit PrivateInvestorApproved(investor);
    }

    /// @notice invest in the ICO
    function invest() payable external {
        if (paused) revert Paused();

        if (phase == Phase.Seed) {
            _seedInvest();
        } else if (phase == Phase.General) {
            _generalInvest();
        } else if (phase == Phase.Open) {
            _openInvest();
        }

        emit Investment(msg.sender, msg.value);
    }

    /// @notice redeem your SPC during the Open phase
    function redeemSpaceCoin() external {
        if (paused) revert Paused();
        if (phase != Phase.Open) revert InvalidPhase();
        uint redeemableSPC = unredeemedInvestments[msg.sender] * SPC_PER_ETH;
        if (redeemableSPC == 0) revert NoFunds();

        unredeemedInvestments[msg.sender] = 0;
        spaceCoin.transferFromTreasury(msg.sender, redeemableSPC);

        emit SpaceCoinRedeemed(msg.sender, redeemableSPC);
    }

    /// @notice toggle whether the 2% tax is active
    function setTaxActive(bool _taxActive) external onlyOwner {
        spaceCoin.setTaxActive(_taxActive);
    }

    /// @notice toggle whether the ICO is paused (preventing investments & redemptions)
    function setPaused(bool _paused) external onlyOwner {
        paused = _paused;
        emit PauseToggled(_paused);
    }

    function _seedInvest() private {
        if (!privateInvestors[msg.sender]) revert OnlyPrivateInvestors();
        if (unredeemedInvestments[msg.sender] + msg.value > SEED_INDIVIDUAL_INVEST_LIMIT) revert IndividualLimitExceeded();
        if (address(this).balance > SEED_TOTAL_INVEST_LIMIT) revert TotalLimitExceeded();

        unredeemedInvestments[msg.sender] += msg.value;
    }

    function _generalInvest() private {
        if (unredeemedInvestments[msg.sender] + msg.value > GENERAL_INDIVIDUAL_INVEST_LIMIT) revert IndividualLimitExceeded();
        if (address(this).balance > TOTAL_INVEST_LIMIT) revert TotalLimitExceeded();

        unredeemedInvestments[msg.sender] += msg.value;
    }

    function _openInvest() private {
        if (address(this).balance > TOTAL_INVEST_LIMIT) revert TotalLimitExceeded();

        unredeemedInvestments[msg.sender] += msg.value;
    }
}

