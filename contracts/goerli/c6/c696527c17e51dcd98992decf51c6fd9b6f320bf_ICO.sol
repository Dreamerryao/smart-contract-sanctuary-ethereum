pragma solidity 0.8.17;

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";

/// @author Cameron Askew
/// @notice ERC20 token SpaceCoin
contract SpaceCoin is ERC20 {

    // events
    event TaxToggled(bool active);

    // errors
    error SupplyLimitExceeded();
    error OnlyOwner();

    // constants
    uint constant private MAX_SUPPLY = 500_000 * (10 ** 18);

    // immutable
    address immutable private owner;
    address immutable private treasury;

    // state
    bool private taxActive = false;

    modifier onlyOwner {
        if (msg.sender != owner) revert OnlyOwner();
        _;
    }

    constructor(address _owner, address _treasury) ERC20("Space Coin", "SPC") {
        owner = _owner;
        treasury = _treasury;
        _mint(_treasury, MAX_SUPPLY);
    }

    /// @notice Toggles whether the 2% tax is being imposed or not.
    function setTaxActive(bool _taxActive) external onlyOwner {
        taxActive = _taxActive;
        emit TaxToggled(_taxActive);
    }

    /// @notice Transfer SPC from the treasury to an address.
    function transferFromTreasury(address to, uint256 amount) external onlyOwner {
        _transfer(treasury, to, amount);
    }

    // we hook into this to impose a 2% transfer tax
    function _afterTokenTransfer(address from, address to, uint256 amount) internal override {
        if (!taxActive) return;
        if (from == address(0)) return; // this is a mint or burn (not a transfer)
        if (from == treasury || to == treasury) return; // this is either redeeming SPC or a tax itself

        // this is a transfer which we tax at 2%
        _transfer(to, treasury, amount / 50);
    }
}

