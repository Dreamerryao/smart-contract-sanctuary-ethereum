pragma solidity 0.8.16;

import "../metatx/GivitNFTContext.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";
import "../nfts/IGivitNFT.sol";

contract GivitNFTAirdropSignature is GivitNFTContext {

    struct NFTData {
        address signer;
        uint64 startDate;
        uint64 endDate;
    }
    mapping(address => NFTData) private nftData;
    mapping(address => mapping(uint24 => bool)) private userMints;

    address public ownerPendingClaim;
    address public owner;

    event onNFTData(address _nft, address _signer, uint64 _startDate, uint64 _endDate);
    event onNFTClaimed(address _nft, uint256 _id, address _to);
    event NewOwnershipProposed(address _currentOwner, address _proposedOwner);
    event OwnershipTransferred(address _previousOwner, address _newOwner);

    constructor(address _forwarder) GivitNFTContext(_forwarder) {
        owner = _msgSender();
    }

    function setNFTData(address _nft, address _signer, uint64 _startDate, uint64 _endDate) external {
        require(_msgSender() == owner, "OnlyOwner");
        require(_nft != address(0), "ZeroAddress");
        require(_endDate >= _startDate, "BadDates");

        nftData[_nft] = NFTData({
            signer: _signer,
            startDate: _startDate,
            endDate: _endDate
        });

        emit onNFTData(_nft, _signer, _startDate, _endDate);
    }

    function getNFTData(address _nft) external view returns (NFTData memory) {
        return nftData[_nft];
    }

    function claimNFT(bytes calldata _message, bytes calldata _messageLen, bytes calldata _signature) external {
        (address _nft, uint24 _id) = abi.decode(_message,(address, uint24));
        require(_nft != address(0), "NullAddress");
        address signer = _decodeSignature(_message, _messageLen, _signature);
        require(signer == nftData[_nft].signer, "BadSigner");
        if (nftData[_nft].startDate > 0) require(block.timestamp >= nftData[_nft].startDate, "NotStarted");
        if (nftData[_nft].endDate > 0) require(nftData[_nft].endDate >= block.timestamp, "Ended");
        require(userMints[_nft][_id] == false, "Minted");

        userMints[_nft][_id] = true;
        IGivitNFT(_nft).safeMint(_msgSender(), _id);

        emit onNFTClaimed(_nft, _id, _msgSender());
    }

    function proposeChangeOwner(address _owner) external {
        require(_msgSender() == owner, "OnlyOwner");
        require(_owner != address(0), "ZeroAddress");
        ownerPendingClaim = _owner;

        emit NewOwnershipProposed(_msgSender(), _owner);
    }

    function claimOwnership() external {
        require(_msgSender() == ownerPendingClaim, "OnlyProposedOwner");
        ownerPendingClaim = address(0);
        address oldOwner = owner;
        owner = _msgSender();

        emit OwnershipTransferred(oldOwner, owner);
    }

    function _decodeSignature(bytes memory _message, bytes memory _messageLength, bytes memory _signature) internal pure returns (address) {
        if (_signature.length != 65) return (address(0));

        bytes32 messageHash = keccak256(abi.encodePacked(hex"19457468657265756d205369676e6564204d6573736167653a0a", _messageLength, _message));
        bytes32 r;
        bytes32 s;
        uint8 v;

        assembly {
            r := mload(add(_signature, 0x20))
            s := mload(add(_signature, 0x40))
            v := byte(0, mload(add(_signature, 0x60)))
        }

        if (uint256(s) > 0x7FFFFFFFFFFFFFFFFFFFFFFFFFFFFFFF5D576E7357A4501DDFE92F46681B20A0) return address(0);
        if (v != 27 && v != 28) return address(0);
        
        return ecrecover(messageHash, v, r, s);
    }
}

