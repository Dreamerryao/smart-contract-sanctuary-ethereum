pragma solidity ^0.8.13;

contract SampleEvents {
    /*//////////////////////////////////////////////////////////////
                                 EVENTS
    //////////////////////////////////////////////////////////////*/
    event ItemState(address indexed by);

    /*//////////////////////////////////////////////////////////////
                                 STATE
    //////////////////////////////////////////////////////////////*/

    bool public collectionState;

    /*//////////////////////////////////////////////////////////////
                               CONSTRUCTOR
    //////////////////////////////////////////////////////////////*/

    constructor() {}

    /*//////////////////////////////////////////////////////////////
                                 LOGIC
    //////////////////////////////////////////////////////////////*/

    // @notice Changes the state of the collection
    // @dev you can easily hit this function from a blockexplorer
    function changeCollectionState() public {
        collectionState = !collectionState;
        emit ItemState(msg.sender);
    }
}