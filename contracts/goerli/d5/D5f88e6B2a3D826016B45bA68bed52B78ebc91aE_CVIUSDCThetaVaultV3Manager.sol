pragma solidity ^0.8.4;

import './libraries/Babylonian.sol';
import "./KeepersBased.sol";
import './interfaces/IThetaVaultV3Manager.sol';
import './interfaces/IThetaVaultV3Management.sol';
import "./interfaces/IUniswapHelper.sol";
import "./interfaces/ICVIOracle.sol";

contract ThetaVaultV3Manager is KeepersBased, IThetaVaultV3Manager
{
    uint256 private constant MAX_PERCENTAGE = 10000;
    uint256 private constant Q96 = 0x1000000000000000000000000;
    uint256 private constant VOL_TOKEN_DECIMALS = 18;

    IThetaVaultV3Management public thetaVault;
    IUniswapHelper public uniswapHelper;
    IUniswapV3Pool public pricePool;
    ICVIOracle public oracle;

    uint32 public twapInterval;
    uint256 public minHighSlippagePercentage;

    uint256 public lowSlippageCVIWindow;
    uint256 public highSlippageCVIWindow;
    uint32 public maxDiviationPercentage;
    uint32 public cviAtPerform;

    function initialize(IThetaVaultV3Management _thetaVault, IUniswapHelper _uniswapHelper, IUniswapV3Pool _pricePool, ICVIOracle _oracle) external initializer {
        __KeepersBased_init();
        thetaVault = _thetaVault;
        uniswapHelper = _uniswapHelper;
        pricePool = _pricePool;
        oracle = _oracle;

        twapInterval = 10 minutes;
        minHighSlippagePercentage = 1000;
        lowSlippageCVIWindow = 5e6;
        highSlippageCVIWindow = 20e6;
        maxDiviationPercentage = 100; // 1%
    }

    function perform() internal override {
        uint256 cviPriceWindow = lowSlippageCVIWindow;

        if (address(pricePool) != address(0)) {
            (uint256 priceChange, uint256 fromPrice) = uniswapHelper.getTWAPPriceDelta(pricePool, twapInterval);
            if (priceChange * MAX_PERCENTAGE / fromPrice >= minHighSlippagePercentage) {
                cviPriceWindow = highSlippageCVIWindow;
            }
        }

        (cviAtPerform,,) = oracle.getCVILatestRoundData();
        uint256 currVolTokenPrice = uint256(cviAtPerform) * 1e6 / 100; // Move from cvi value to UDSC price

        uint160 sqrtMinPriceX96 = uint160(Babylonian.sqrt(currVolTokenPrice - cviPriceWindow) * Q96 / 10 ** (VOL_TOKEN_DECIMALS / 2));
        uint160 sqrtMaxPriceX96 = uint160(Babylonian.sqrt(currVolTokenPrice + cviPriceWindow) * Q96 / 10 ** (VOL_TOKEN_DECIMALS / 2));

        thetaVault.setRange(sqrtMinPriceX96, sqrtMaxPriceX96);
    }

    function setTwapInterval(uint32 _newTwapInterval) external override onlyOwner {
        twapInterval = _newTwapInterval;
    }

    function setMinHighSlippagePercentage(uint256 _newMinHighSlippagePercentage) external override onlyOwner {
        minHighSlippagePercentage = _newMinHighSlippagePercentage;
    }

    function setLowSlippageCVIWindow(uint256 _newLowSlippageCVIWindow) external override onlyOwner {
        lowSlippageCVIWindow = _newLowSlippageCVIWindow;
    }

    function setHighSlippageCVIWindow(uint256 _newHighSlippageCVIWindow) external override onlyOwner {
        highSlippageCVIWindow = _newHighSlippageCVIWindow;
    }

    function setMaxDiviationPercentage(uint32 _newMaxDiviationPercentage) external override onlyOwner {
        maxDiviationPercentage = _newMaxDiviationPercentage;
    }

    function isUpkeepNeeded() internal override view returns (bool) {
        uint32 lastCVI = cviAtPerform;
        if (lastCVI == 0 || (block.timestamp - lastUpkeepTime) > upkeepInterval) {
            return true;
        }
        (uint32 currCVI,,) = oracle.getCVILatestRoundData();
        uint256 deviationPercent = (lastCVI > currCVI ? (lastCVI - currCVI) : (currCVI - lastCVI)) * MAX_PERCENTAGE / lastCVI;
        return deviationPercent > maxDiviationPercentage;
    }
}

