import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@chainlink/contracts/src/v0.8/interfaces/KeeperCompatibleInterface.sol";

import "./interfaces/IKeepersBased.sol";

abstract contract KeepersBased is OwnableUpgradeable, KeeperCompatibleInterface, IKeepersBased {
    uint256 public lastUpkeepTime;
    uint32 public upkeepInterval;
    uint32 public upkeepTimeWindow;

    bool public enableWhitelist;
    mapping (address => bool) public operators;

    function __KeepersBased_init() internal onlyInitializing {
        OwnableUpgradeable.__Ownable_init();
        lastUpkeepTime = 0;
        upkeepInterval = 1 days;
        upkeepTimeWindow = 15 minutes;
        enableWhitelist = true;
    }

    function setUpkeepInterval(uint32 _upkeepInterval) external override onlyOwner {
        upkeepInterval = _upkeepInterval;
    }

    function setUpkeepTimeWindow(uint32 _upkeepTimeWindow) external override onlyOwner {
        upkeepTimeWindow = _upkeepTimeWindow;
    }

    function setEnableWhitelist(bool _enableWhitelist) external override onlyOwner {
        enableWhitelist = _enableWhitelist;
    }

    function setOperatorAddress(address user, bool isAllowed) external override onlyOwner {
        operators[user] = isAllowed;
    }

    function checkUpkeep(
        bytes calldata /* checkData */
    ) external view override returns (bool upkeepNeeded, bytes memory performData) {
        upkeepNeeded = isUpkeepNeeded();
        return (upkeepNeeded, performData);
    }

    function performUpkeep(
        bytes calldata /* performData */
    ) external override {
        require(!enableWhitelist || operators[msg.sender], "Whitelisted addresses only");
        require(isUpkeepNeeded(), "Bad time window");
        lastUpkeepTime = block.timestamp;
        perform();
    }

    function isUpkeepNeeded() internal virtual view returns (bool) {
        //TOOD: Relevant for rebaser, not for others
        return block.timestamp - (lastUpkeepTime  / 1 days) * 1 days >= upkeepInterval; // && block.timestamp % 1 days <= upkeepTimeWindow;
    }

    function perform() internal virtual;
}

