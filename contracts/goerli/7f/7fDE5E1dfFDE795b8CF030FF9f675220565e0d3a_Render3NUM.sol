import { Base64 } from 'base64-sol/base64.sol';
import { IRender3NUM } from './interfaces/IRender3NUM.sol';

contract Render3NUM is IRender3NUM {
    using Strings for uint256;

    bytes16 private constant _HEX_SYMBOLS = '0123456789abcdef';
    uint256 private constant _INDEX_TO_BYTES3_FACTOR = 3;

    // prettier-ignore
    string private constant _SVG_START_TAG = '<svg width="320" height="320" viewBox="0 0 320 320" xmlns="http://www.w3.org/2000/svg" shape-rendering="crispEdges">';
    string private constant _SVG_END_TAG = '</svg>';

    /**
     * @notice Given a token ID and seed, construct a token URI for an 3NUM
     * @dev The returned value is a base64 encoded data URI or an API URL.
     */
    function tokenURI(uint256 tokenId, IRender3NUM.Render3NUMParams memory params) external pure returns (string memory) {
        string memory Id = tokenId.toString();
        string memory name = string(abi.encodePacked('3NUM ', Id));
        string memory description = string(abi.encodePacked('3NUM ', Id, ' '));

        return genericDataURI(name, description, params);
    }

    /**
     * @notice Generate a single SVG image.
     */
    function generateSVGImage(IRender3NUM.Render3NUMParams memory params) private pure returns (string memory svg) {
        
        string memory color = _toHexString(params.seed);

        // prettier-ignore
        return string(
            abi.encodePacked(
                _SVG_START_TAG,
                '<rect width="100%" height="100%" fill="#', color, '" />',
                _generateSVGParts(params),
                _SVG_END_TAG
            )
        );
    }

    /**
     * @notice Given a name, description, and 3NUM params, construct a base64 encoded data URI.
     */
    function genericDataURI(
        string memory name,
        string memory description,
        IRender3NUM.Render3NUMParams memory params
    ) private pure returns (string memory) {

        string memory image = generateSVGImage(params);

         // prettier-ignore
        return string(
            abi.encodePacked(
                'data:application/json;base64,',
                Base64.encode(
                    bytes(
                        abi.encodePacked('{"name":"', name, '", "description":"', description, '", "image": "', 'data:image/svg+xml;base64,', image, '"}')
                    )
                )
            )
        );
    }

    /**
     * @dev Convert `bytes` to a 6 character ASCII `string` hexadecimal representation.
     */
    function _generateSVGParts(IRender3NUM.Render3NUMParams memory params) private pure returns (string memory) {
        return string(
            abi.encodePacked('<text> Phone:', uint256(params.phoneNumber).toString(), '</text>',
                             '<text> Seed: ', params.seed.toString(), '</text>')
        );
    }

    /**
     * @dev Convert `bytes` to a 6 character ASCII `string` hexadecimal representation.
     */
    function _toHexString(uint256 seed) private pure returns (string memory) {
        uint24 value = uint24(seed);

        bytes memory buffer = new bytes(6);
        buffer[5] = _HEX_SYMBOLS[value & 0xf];
        buffer[4] = _HEX_SYMBOLS[(value >> 4) & 0xf];
        buffer[3] = _HEX_SYMBOLS[(value >> 8) & 0xf];
        buffer[2] = _HEX_SYMBOLS[(value >> 12) & 0xf];
        buffer[1] = _HEX_SYMBOLS[(value >> 16) & 0xf];
        buffer[0] = _HEX_SYMBOLS[(value >> 20) & 0xf];
        return string(buffer);
    }
}

