pragma solidity ^0.8.13;

import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "./interface/IPToken.sol";
import "./interface/ITokenSeller.sol";

/* ERROR MESSAGES :
{
"RTH"     : "Ratio Too High"
"RTL"     : "Ratio Too Low"
"TLCD"    : "Too low , check decimals!"
"SINA"    : "Sale is Not active"
"SO"      : "Sold out"
"NWL"     : "Not Whitelisted"
"EMS"     : "Exceed max supply"
"TABTMT"  : "This Address bought too much tokens"
}
*/
contract Buyer is AccessControl, ReentrancyGuard {
    event Buying(address buyer, uint256 price, uint256 amount);
    bytes32 public constant DEV = keccak256("DEV");
    bytes32 public constant KONKRETE = keccak256("KONKRETE");

    Variables public variables;
    mapping(address => uint256) public tokensBought;

    constructor(
        address _bank,
        address multisig,
        address _currencyUsed,
        address _pToken,
        uint128 _maxSupply,
        uint32 _tokenPrice,
        uint32 _cexRatio
    ) {
        variables = Variables(
            Step(0),
            _cexRatio,
            _tokenPrice,
            0,
            uint128((_maxSupply * 30) / 100),
            _maxSupply,
            _bank,
            IERC20(_currencyUsed),
            IPToken(_pToken)
        );
        _setupRole(DEFAULT_ADMIN_ROLE, multisig);
        _grantRole(KONKRETE, multisig);
        _grantRole(DEV, msg.sender);
    }

    function withdraw(IERC20 token) public onlyRole(DEV) {
        token.transfer(variables.bank, token.balanceOf(address(this)));
    }

    function buy(
        address _to,
        uint256 amount,
        bytes32[] calldata proof
    ) external onlyWhitelist(proof) nonReentrant {
        Variables memory bufferVariables = variables;
        require(bufferVariables.step != Step(0), "SINA");
        require(bufferVariables.step != Step(2), "SO");
        uint256 cap = amount + bufferVariables.pToken.totalSupply();
        require(cap <= bufferVariables.maxSupply, "EMS");
        require(
            tokensBought[msg.sender] + amount <= bufferVariables.maxToBuy,
            "TABTMT"
        );
        uint256 price = (amount * (10000 * bufferVariables.tokenPrice)) /
            bufferVariables.cexRatioX10000;
        bufferVariables.currencyUsed.transferFrom(
            msg.sender,
            address(this),
            price
        );
        bufferVariables.pToken.mint(_to, amount);
        tokensBought[msg.sender] += amount;
        if (cap == bufferVariables.maxSupply) {
            setStep(2);
        }
        emit Buying(_to, price, amount);
    }

    /* Set the USDC/EUR Ratio for buying amounts , withdraw the old balance before ratio */
    function setCexRatio(uint32 _cexRatioX10000) external onlyRole(DEV) {
        require(_cexRatioX10000 < 16000, "RTH");
        require(_cexRatioX10000 > 6000, "RTL");
        withdraw(variables.currencyUsed);
        variables.cexRatioX10000 = _cexRatioX10000;
    }

    function setStep(uint256 step) public onlyRole(DEV) {
        variables.step = Step(step);
    }

    function setAllowListMerkleRoot(bytes32 merkleRoot) external onlyRole(DEV) {
        variables.merkleRoot = merkleRoot;
    }

    modifier onlyWhitelist(bytes32[] calldata proof) {
        require(
            MerkleProof.verifyCalldata(
                proof,
                variables.merkleRoot,
                keccak256(abi.encodePacked(msg.sender))
            ),
            "NWL"
        );
        _;
    }

    function setCurrency(address currencyToUse) external onlyRole(DEV) {
        Variables memory bufferVariables = variables;
        bufferVariables.currencyUsed.transfer(
            bufferVariables.bank,
            bufferVariables.currencyUsed.balanceOf(address(this))
        );
        bufferVariables.currencyUsed = IERC20(currencyToUse);
        variables = bufferVariables;
    }

    function setmMaxToBuy(uint128 _maxToBuy) external onlyRole(DEV) {
        variables.maxToBuy = _maxToBuy;
    }

    /* Get Price of amount you wants to buy */
    function getPrice(uint256 amount) public view returns (uint256) {
        Variables memory bufferVariables = variables;
        return
            (amount * (10000 * bufferVariables.tokenPrice)) /
            bufferVariables.cexRatioX10000;
    }

    function setPToken(address _pToken) external onlyRole(KONKRETE) {
        variables.pToken = IPToken(_pToken);
    }

    function setPrice(uint32 _tokenPrice) external onlyRole(KONKRETE) {
        variables.tokenPrice = _tokenPrice;
    }
}

