    // A mapping of the amount bid by each address for each auction ID.
    mapping(uint256 => mapping(address => uint256)) public amountBidByAuction;

    // A mapping of the bids made by each address for each auction ID.
    mapping(uint256 => mapping(address => Bid[])) public addressBidsByAuction;

    // Event emitted when end time is changed due to effects of snipe time
    event EndTimeChanged(uint256 indexed auctionId, uint256 endTime);

    // Event emitted when a user enters a bid for an auction.
    event EnterBid(
        uint256 indexed auctionId,
        address indexed nftContract,
        uint256[] nftIds,
        uint256[] nftAmounts,
        address indexed bidder
    );

    constructor(uint16 startingIndex) {
        currentAuctionIndex = startingIndex;
    }

    /* ======= ONLY OWNER FUNCTIONS ======= */

    /**
     * @notice Creates a new auction with the given parameters and can't be called until `clearAuction` has run
     * @dev Only the owner of the contract can call this function.
     * @param maxWinners The maximum number of winners allowed in the auction.
     * @param startTime The timestamp when the auction will start.
     * @param bidTime The amount of time in seconds that each bid will be accepted for.
     * @param bidSnipeTimer The amount of time in seconds that the auction will be extended if a new bid is placed near the end of the auction.
     */
    function createAuction(
        uint8 maxWinners,
        uint256 startTime,
        uint256 bidTime,
        uint256 bidSnipeTimer,
        uint16 minPointsToBid
    ) external onlyOwner {
        require(bidNFT != address(0), "Bid NFT needs to be set");
        require(
            currentAuctionWinnerCount == 0,
            "Must clear previous auction before creating another auction"
        );
        require(maxWinners > 0, "Max winners cannot be 0");
        require(minPointsToBid > 0, "Min points to bid cannot be 0");

        currentAuctionWinnerCount = maxWinners;
        currentAuctionExtensionTime = bidSnipeTimer;
        beginAuctionTime = startTime;
        timeToBid = bidTime;
        minimumPointsToBid = minPointsToBid;
    }

    /**
     * @notice Sends NFTs used to bid in the auction to the dead address.
     * @dev Only the owner of the contract can call this function.
     * @param tokenIds Array of NFT IDs to send to dead address
     * @param quantities Array of quantity of NFT IDs to send to dead address
     */
    function sendNFTs(uint256[] memory tokenIds, uint256[] memory quantities)
        external
        nonReentrant
        onlyOwner
    {
        require(
            block.timestamp > beginAuctionTime + timeToBid,
            "The auction has not ended yet"
        );
        require(currentAuctionBidTokensCount > 0, "No NFTs left to sent");
        require(tokenIds.length > 0, "TokenIds array cannot be empty");

        if (IERC721(bidNFT).supportsInterface(ERC721_INTERFACE_ID)) {
            _sendNFTs721(tokenIds);
        } else if (IERC1155(bidNFT).supportsInterface(ERC1155_INTERFACE_ID)) {
            _sendNFTs1155(tokenIds, quantities);
        }
    }

    /**
     * @notice Clears the current auction and reset all relevant variables.
     * @dev Only the owner of the contract can call this function.
     */
    function clearAuction() external onlyOwner {
        require(beginAuctionTime > 0, "Auction already cleared");
        require(
            currentAuctionBidTokensCount == 0,
            "NFTs not sent to dead address yet"
        );
        require(
            block.timestamp > beginAuctionTime + timeToBid,
            "Auction has yet to conclude"
        );
        _clearAuction();
    }

    /**
     * @notice Changes the time allotted for bidding in the auction.
     * @dev Only the owner of the contract can call this function.
     * @param _timeToBid The new time (in seconds) for bidding in the auction.
     */
    function changeTimeToBid(uint256 _timeToBid) external onlyOwner {
        require(
            block.timestamp < (beginAuctionTime + timeToBid),
            "Auction has ended"
        );
        timeToBid = _timeToBid;
    }

    /**
     * @notice Changes the minimum points for bidding in the auction.
     * @dev Only the owner of the contract can call this function.
     * @param _minimumPointsToBid The new minimum points for bidding in the auction.
     */
    function changeMinimumPointsToBid(uint16 _minimumPointsToBid)
        external
        onlyOwner
    {
        require(block.timestamp < beginAuctionTime, "Auction has started");
        minimumPointsToBid = _minimumPointsToBid;
    }

    /**
     * @notice Sets the bidNFT contract address.
     * @dev Only the owner of the contract can call this function.
     * @param _bidNFT The address of the NFT contract used to bid in the auction
     */
    function setBidContract(address _bidNFT) external onlyOwner {
        require(_bidNFT != address(0), "Address cannot be the zero address");
        require(
            currentAuctionBidTokensCount == 0,
            "NFTs not sent to dead address yet"
        );
        bidNFT = _bidNFT;
    }

    /**
     * @notice Sets the address of the signer used for signature verification.
     * @dev Only the owner of the contract can call this function.
     * @param _signer The address of the signer.
     */
    function setSigner(address _signer) external onlyOwner {
        require(_signer != address(0), "Signer cannot be the zero address");
        signer = _signer;
    }

    /**
     * @notice Used to withdraw a given ERC20 token from the contract and transfer it to a specified recipient.
     * @param to The address of the recipient to transfer the tokens to.
     * @param token The address of the ERC20 token
     * @param quantity The amount of tokens to be transferred
     */
    function ERC20Withdraw(
        address to,
        address token,
        uint256 quantity
    ) external onlyOwner {
        IERC20 targetToken = IERC20(token);
        targetToken.transferFrom(address(this), to, quantity);
    }

    /* ======= PUBLIC FUNCTIONS ======= */

    /**
     * @notice Allows a bidder to enter a bid for the current auction.
     * @param nfts An array of NFT IDs being used to bid.
     * @param nftValues An array of NFT values corresponding to the NFT IDs.
     * @param nftAmounts An array of NFT amounts corresponding to the NFT IDs.
     * @param signature The signature from the bidder, authorizing the bid.
     */
    function enterBid(
        uint256[] calldata nfts,
        uint256[] calldata nftValues,
        uint256[] calldata nftAmounts,
        bytes calldata signature
    ) external nonReentrant {
        require(
            block.timestamp >= beginAuctionTime,
            "Auction is not currently active"
        );
        require(
            block.timestamp < (beginAuctionTime + timeToBid),
            "Auction has ended"
        );
        require(
            verifySignature(nfts, nftValues, nftAmounts, signature),
            "Invalid nft values"
        );

        if (IERC721(bidNFT).supportsInterface(ERC721_INTERFACE_ID)) {
            _enterBid721(nfts, nftValues);
        } else if (IERC1155(bidNFT).supportsInterface(ERC1155_INTERFACE_ID)) {
            _enterBid1155(nfts, nftValues, nftAmounts);
        }
    }

    /**
     * @notice Gets the total number of members who have joined the auction.
     * @return The number of members who have joined the auction.
     */
    function getTotalAuctionMembers() external view returns (uint256) {
        return joinedAuction.length;
    }

    /**
     * @notice Gets the time remaining until the auction ends.
     * @return The time (in seconds) remaining until the auction ends.
     */
    function timeUntilAuctionEnds() external view returns (uint256) {
        require(block.timestamp >= beginAuctionTime, "Auction is not active");
        require(
            block.timestamp < (beginAuctionTime + timeToBid),
            "Auction has ended"
        );
        return (beginAuctionTime + timeToBid) - block.timestamp;
    }

    /* ======= INTERNAL FUNCTIONS ======= */

    /**
     * @notice Internal function that clears the current auction and resets all relevant variables.
     * @dev This function should only be called internally.
     */
    function _clearAuction() internal {
        delete beginAuctionTime;
        delete currentAuctionWinnerCount;
        delete currentAuctionExtensionTime;
        delete minimumPointsToBid;
        delete timeToBid;

        unchecked {
            ++currentAuctionIndex;
        }
    }

    /**
     * @notice Computes the total sum of elements of a given array.
     * @param array An array of values.
     * @return The total sum of elements
     */
    function getSumOfElements(uint256[] memory array)
        internal
        pure
        returns (uint256)
    {
        uint256 val;
        for (uint256 i = 0; i < array.length; ) {
            val += array[i];
            unchecked {
                ++i;
            }
        }
        return val;
    }

    /**
     * @notice Internal function to allow entering a bid using ERC721 NFTs.
     * @param nfts An array of NFT IDs used to bid.
     * @param nftValues An array of NFT values corresponding to the NFT IDs.
     */
    function _enterBid721(uint256[] calldata nfts, uint256[] calldata nftValues)
        internal
    {
        require(nfts.length == nftValues.length, "Array lengths mismatch");

        // Will be sent as it is in the event
        uint256[] memory nftAmounts;

        require(
            IERC721(bidNFT).isApprovedForAll(msg.sender, address(this)),
            "Contract not approved to transfer"
        );

        // If this is the users first time bidding add them to the bidders array which is accurate for the current auction
        if (
            addressBidsByAuction[currentAuctionIndex][_msgSender()].length < 1
        ) {
            joinedAuction.push(_msgSender());
        }

        for (uint256 i = 0; i < nfts.length; ) {
            // Transfer all bid NFTs to this contract
            IERC721(bidNFT).safeTransferFrom(
                _msgSender(),
                address(this),
                nfts[i]
            );
            // Mapping will be used to burn NFTs
            addressBidsByAuction[currentAuctionIndex][_msgSender()].push(
                Bid(nfts[i], 1)
            );
            unchecked {
                ++i;
            }
        }

        amountBidByAuction[currentAuctionIndex][
            _msgSender()
        ] += getSumOfElements(nftValues);

        // Increase counter for bidded tokens
        currentAuctionBidTokensCount += nfts.length;

        // If current bid is closer to auction end time than the auction extension time then extend the auction to prevent sniping
        if (
            (beginAuctionTime + timeToBid) - block.timestamp <
            currentAuctionExtensionTime
        ) {
            extendTimeToBid();
        }

        emit EnterBid(
            currentAuctionIndex,
            bidNFT,
            nfts,
            nftAmounts,
            msg.sender
        );
    }

    /**
     * @notice Internal function to allow entering a bid using ERC1155 NFTs.
     * @param nfts An array of NFT IDs used to bid.
     * @param nftValues An array of NFT values multiplied by NFT amount corresponding to the NFT IDs
     * @param nftAmounts An array of NFT amounts corresponding to the NFT IDs.
     */
    function _enterBid1155(
        uint256[] calldata nfts,
        uint256[] calldata nftValues,
        uint256[] calldata nftAmounts
    ) internal {
        require(
            nfts.length == nftValues.length && nfts.length == nftAmounts.length,
            "Array lengths mismatch"
        );

        require(
            IERC1155(bidNFT).isApprovedForAll(msg.sender, address(this)),
            "Contract not approved to transfer"
        );

        // If this is the users first time bidding increase the bidders counter the current auction
        if (
            addressBidsByAuction[currentAuctionIndex][_msgSender()].length < 1
        ) {
            joinedAuction.push(_msgSender());
        }

        // Transfer all bid NFTs to this contract
        IERC1155(bidNFT).safeBatchTransferFrom(
            _msgSender(),
            address(this),
            nfts,
            nftAmounts,
            "0x"
        );

        for (uint256 i = 0; i < nfts.length; ) {
            addressBidsByAuction[currentAuctionIndex][_msgSender()].push(
                Bid(nfts[i], nftAmounts[i])
            );
            unchecked {
                ++i;
            }
        }

        amountBidByAuction[currentAuctionIndex][
            _msgSender()
        ] += getSumOfElements(nftValues);

        // Increase counter for bidded tokens
        currentAuctionBidTokensCount += getSumOfElements(nftAmounts);

        // If current bid is closer to auction end time than the auction extension time then extend the auction to prevent sniping
        if (
            (beginAuctionTime + timeToBid) - block.timestamp <
            currentAuctionExtensionTime
        ) {
            extendTimeToBid();
        }

        emit EnterBid(
            currentAuctionIndex,
            bidNFT,
            nfts,
            nftAmounts,
            msg.sender
        );
    }

    /**
     * @notice Extends the auction time to prevent sniping in case current bid is closer to auction end time
     */
    function extendTimeToBid() internal {
        timeToBid =
            (block.timestamp + currentAuctionExtensionTime) -
            beginAuctionTime;

        emit EndTimeChanged(currentAuctionIndex, beginAuctionTime + timeToBid);
    }

    /**
     * @notice Internal function to send all ERC721 NFTs held by the contract to the dead address.
     * @param tokenIds Array of NFT IDs to send to dead address
     */
    function _sendNFTs721(uint256[] memory tokenIds) internal {
        for (uint256 i = 0; i < tokenIds.length; ) {
            IERC721(bidNFT).safeTransferFrom(
                address(this),
                DEAD_ADDRESS,
                tokenIds[i]
            );
            unchecked {
                ++i;
            }
        }

        // Decrease counter for bidded tokens by length of array
        currentAuctionBidTokensCount -= tokenIds.length;
    }

    /**
     * @notice Internal function to send all ERC1155 NFTs held by the contract to the dead address.
     * @dev This function should only be called internally.
     */
    function _sendNFTs1155(
        uint256[] memory tokenIds,
        uint256[] memory quantities
    ) internal {
        require(tokenIds.length == quantities.length, "Array lengths mismatch");

        IERC1155(bidNFT).safeBatchTransferFrom(
            address(this),
            DEAD_ADDRESS,
            tokenIds,
            quantities,
            "0x"
        );

        // Decrease counter for bidded tokens by sum of quantities
        currentAuctionBidTokensCount -= getSumOfElements(quantities);
    }

    /**
     * @notice Internal function to verify a given signature using the current signer.
     * @dev This function should only be called internally.
     * @param nfts The IDs of the NFTs used to bid.
     * @param nftValues The values of the NFTs used to bid.
     * @param nftAmounts The amounts of the NFTs used to bid.
     * @param signature The signature to verify.
     * @return A boolean indicating whether the signature is valid.
     */
    function verifySignature(
        uint256[] calldata nfts,
        uint256[] calldata nftValues,
        uint256[] calldata nftAmounts,
        bytes calldata signature
    ) internal view returns (bool) {
        require(signer != address(0), "Signer not set");
        bytes32 hash = keccak256(abi.encodePacked(nfts, nftValues, nftAmounts));
        bytes32 signedHash = hash.toEthSignedMessageHash();

        return
            SignatureChecker.isValidSignatureNow(signer, signedHash, signature);
    }

    /* ======= MISCELLANEOUS FUNCTIONS ======= */

    function onERC721Received(
        address,
        address,
        uint256,
        bytes memory
    ) public virtual returns (bytes4) {
        return this.onERC721Received.selector;
    }

    function onERC1155Received(
        address,
        address,
        uint256,
        uint256,
        bytes memory
    ) public virtual returns (bytes4) {
        return this.onERC1155Received.selector;
    }

    function onERC1155BatchReceived(
        address,
        address,
        uint256[] memory,
        uint256[] memory,
        bytes memory
    ) public virtual returns (bytes4) {
        return this.onERC1155BatchReceived.selector;
    }
}