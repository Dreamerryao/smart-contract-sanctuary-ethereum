interface INFT721 {
    enum TransferTypes {
        mintType,
        craftType,
        transferType,
        burnType
    }

    event Transfer(
        address indexed from,
        address indexed to,
        uint256 indexed tokenId,
        TransferTypes _type
    );

    event Approval(
        address indexed owner,
        address indexed approved,
        uint256 indexed tokenId
    );
    event ApprovalForAll(
        address indexed owner,
        address indexed operator,
        bool approved
    );

    function burn(uint256 tokenId) external;
}

