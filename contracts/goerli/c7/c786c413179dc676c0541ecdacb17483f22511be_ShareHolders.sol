contract ShareHolders is Context, Ownable {
    using SafeMath for uint256;
    IERC20 private _bep20Token;


    constructor(IERC20 bep20Token_){
        _bep20Token = bep20Token_;
    }

    function decimals() public pure returns(uint8){
        return 18;
    }


    struct Member {
        uint256 balance;
        address account;
        bool present;
    }

    Member[] private members;
    mapping(address => Member) private shareHolders;

    event Withdrawn(address indexed to, uint256 amount);
    event Deposit(address indexed from, uint256 amount);

    function getAllMembers() public view returns(Member[] memory){
        return members;
    }
    function memberDetails(address account) public view returns(Member memory){
        return shareHolders[account];
    }

    function listAddresses() public view returns(address[] memory){
        address[] memory addresses = new address[](members.length);
        for(uint256 i; i < members.length; i++){
            address account = members[i].account;
            addresses[i] = account;
        } 
        return addresses;
    }

    function listShares() public view returns(uint256[] memory){
        uint256[] memory shares = new uint256[](members.length);
        for(uint256 i; i < members.length; i++){
            Member memory member = members[i];
            uint256 share = member.balance.div(_bep20Token.balanceOf(address(this))).mul(100);
            shares[i] = share * 10 ** decimals();
        }

        return shares;
    }

    
    function getShareDetail(address account) public view returns(uint256){
        Member memory member = shareHolders[account];
        uint256 balance = member.balance;
        uint256 totalPoolShare = _bep20Token.balanceOf(address(this));
        uint256 share = balance.div(totalPoolShare).mul(10**2);
        return (share * 10 ** decimals());
    }


    function deposit(uint256 amount) public {
        require(_bep20Token.allowance(_msgSender(), address(this)) >= amount, "Please approve us to spend the amount of token.");
        _bep20Token.transferFrom(_msgSender(), address(this), amount);
        
        Member storage member = shareHolders[_msgSender()];
        member.balance += amount;
        member.account = _msgSender();
        member.present = true;
        pushMembers(member);

        emit Deposit(_msgSender(), amount);
    }

    function withdraw(address to_, uint256 amount) public onlyOwner {
        require(amount <= _bep20Token.balanceOf(address(this)), "Not enough funds.");
        _bep20Token.transfer(to_, amount);
        emit Withdrawn(to_, amount);
    }

    function pushMembers(Member storage member) internal {
        bool isPresent;
        uint256 index;
        for(uint256 i; i < members.length; i++){
            if(members[i].account == member.account){
                isPresent = true;
                index = i;
                break;
            }
        }

        if(!isPresent){
            members.push(member);
        } else {
            members[index].balance = member.balance;
        }
    }
}