pragma solidity ^0.8.4;
import "@openzeppelin/contracts/access/AccessControlEnumerable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/security/Pausable.sol";

import "erc721a/contracts/extensions/IERC721AQueryable.sol";
import "./IRef3NFT.sol";
import "./IRef3Offer.sol";

/**
 * @dev Abstract contract to be used as offer contract
 */
abstract contract IOffer is IERC721AQueryable, IRef3Offer, IAccessControlEnumerable {

}

contract ref3_brideGirls is IRef3NFT, AccessControlEnumerable, ReentrancyGuard {
    bytes32 public constant OWNER = keccak256("OWNER_ROLE");
    bytes32 public constant REFERRAL_MANAGER = keccak256("REFERRAL_MANAGER_ROLE");
    /**
     * @dev all fees are flat fees
     */
    uint256 public REFERRAL_FEE;

    address public OFFER_ADDRESS;
    address public REF3_ADDRESS;

    /**
     * @dev mapping corresponds to NFT url in this case
     */
    mapping(uint256 => uint256) public PAYOUTS_BY_NFT;
    IOffer internal OFFER_CONTRACT;

    constructor(address _offerAddress, uint256 _referralFee) {
        _grantRole(DEFAULT_ADMIN_ROLE, _msgSender());
        _setRoleAdmin(OWNER, DEFAULT_ADMIN_ROLE);
        _grantRole(OWNER, _msgSender());
        _setOfferAddress(_offerAddress);
        setReferralFee(_referralFee);
    }

    modifier onlyManager() {
        require(
            OFFER_CONTRACT.hasRole(OWNER, _msgSender()) || OFFER_CONTRACT.hasRole(REFERRAL_MANAGER, _msgSender()),
            "Ref3: You are not an offer manager or owner."
        );
        _;
    }

    /**
     * @dev this is referral order of NFT. Uses tokenId as the referral identifier
     */
    function ref3NftOrder(uint256 _amount, address _recepient, uint256 _tokenId) public payable override {
        uint256 _salePrice = OFFER_CONTRACT.getRef3Price() + REFERRAL_FEE;
        require(msg.value == _salePrice * _amount, "Ether sent with this transaction is not correct");
        OFFER_CONTRACT.mintNFTTokensReferral(_amount, _recepient);
        PAYOUTS_BY_NFT[_tokenId] += REFERRAL_FEE * _amount;
        emit Ref3NftOrder(OFFER_ADDRESS, _msgSender(), _recepient, _tokenId);
    }

    function offerName() public view override returns (string memory) {
        return OFFER_CONTRACT.name();
    }

    function offerSymbol() public view override returns (string memory) {
        return OFFER_CONTRACT.symbol();
    }

    function setReferralFee(uint256 _fee) public override onlyManager {
        REFERRAL_FEE = _fee;
        emit SetReferralFee(OFFER_ADDRESS, REFERRAL_FEE);
    }

    function setOfferAddress(address _address) public override onlyManager {
        _setOfferAddress(_address);
    }

    function _setOfferAddress(address _address) private {
        OFFER_ADDRESS = _address;
        OFFER_CONTRACT = IOffer(_address);
        emit SetOfferAddress(OFFER_ADDRESS);
    }

    function getManagers(uint256 _index) external view override returns (address) {
        return OFFER_CONTRACT.getRoleMember(REFERRAL_MANAGER, _index);
    }

    function getManagerCount() external view override returns (uint256) {
        return OFFER_CONTRACT.getRoleMemberCount(REFERRAL_MANAGER);
    }

    function getPrice() external view override returns (uint256) {
        return OFFER_CONTRACT.getRef3Price() + REFERRAL_FEE;
    }

    function nftPayout(uint256 _tokenId) public view override returns (uint256) {
        return PAYOUTS_BY_NFT[_tokenId];
    }

    function allPayout(address _address) public view override returns (uint256) {
        uint256 totalPayout = 0;
        uint256[] memory tokenIds = OFFER_CONTRACT.tokensOfOwner(_address);
        for (uint256 i = 0; i < tokenIds.length; ++i) {
            totalPayout += PAYOUTS_BY_NFT[tokenIds[i]];
        }
        return totalPayout;
    }

    function claimNftPayout(uint256 _tokenId) public override {
        address owner = OFFER_CONTRACT.ownerOf(_tokenId);
        uint256 payout = PAYOUTS_BY_NFT[_tokenId];
        PAYOUTS_BY_NFT[_tokenId] = 0;
        (bool success, ) = owner.call{ value: payout }("");
        require(success, "Ref3: Claimal failed");
        emit ClaimPayout(OFFER_ADDRESS, _tokenId, owner, payout);
    }

    function claimAllPayout(address _address) public override {
        uint256[] memory tokenIds = OFFER_CONTRACT.tokensOfOwner(_address);
        uint256 tokenId;
        uint256 payout;
        for (uint256 i = 0; i < tokenIds.length; ++i) {
            tokenId = tokenIds[i];
            payout = PAYOUTS_BY_NFT[tokenId];
            PAYOUTS_BY_NFT[tokenId] = 0;
            (bool success, ) = _address.call{ value: payout }("");
            require(success, "Ref3: Claimal failed");
            emit ClaimPayout(OFFER_ADDRESS, tokenId, _address, payout);
        }
    }
}

