pragma solidity ^0.8.0;

import "IERC20.sol";
import "IERC1155.sol";
import "ERC1155Holder.sol";

contract Bank is ERC1155Holder {
    address public owner;
    mapping(address => uint256) public KYCAddress_maxLoanAmount;
    IERC20 USD = IERC20(0xA7eF12C499991D165568f76F84E72B33Cb3C2dEa);
    uint256 public rate;
    mapping(address => uint256) public NFTContract_maxLoanAmount;
    
    //Each person may only have 1 loan at a time
    struct loan {
        uint256 loan_value;
        uint256 startTime;
        address nft_address;
        uint256 id;
    }

    mapping(address => loan) loan_details;

    constructor() {
        owner = msg.sender;
        rate = 0;  // 1e18 = 1%
    }

    event Loan(address indexed _address, uint256 _amount, uint256 _startTime, address _nftAddress, uint256 _id);
    event LoanRepayed(address indexed _address, uint256 _initialAmount, uint256 _repaymentAmount, address _nftAddress, uint256 _id);

    modifier onlyOwner() {
        require( msg.sender == owner, "You are not the owner");
        _;
    }

    function addToKYC(address _address, uint256 _maxLoanAmount) public onlyOwner {
        require(_maxLoanAmount > 0, "Max loan amount must be larger than 0");
        KYCAddress_maxLoanAmount[_address] = _maxLoanAmount;
    }

    function removeFromKYC(address _address) public onlyOwner {
        delete KYCAddress_maxLoanAmount[_address];
    }

    function updateRate(uint256 _rate) public onlyOwner {
        rate = _rate;
    }

    function addNFTContract(address _address, uint256 _amount) public onlyOwner {
        NFTContract_maxLoanAmount[_address] = _amount;
    }

    function removeNFTContract(address _address) public onlyOwner {
        delete NFTContract_maxLoanAmount[_address];
    }

    //Only allows 1 of the ERC1155 to be used as collateral
    function loanNFT(address _NFTaddress, uint256 _id, uint256 _loan_value) public {
        require(KYCAddress_maxLoanAmount[msg.sender] != 0, "Please complete KYC");
        require(loan_details[msg.sender].loan_value == 0, "This user has an outstanding loan");
        require(KYCAddress_maxLoanAmount[msg.sender] >= _loan_value, "User not authorised for a loan of this amount");
        require(_loan_value > 0, "Loan value must be greater than 0"); 
        require(NFTContract_maxLoanAmount[_NFTaddress] > 0, "Please add a verified NFT as collateral");
        require(NFTContract_maxLoanAmount[_NFTaddress] >= _loan_value, "NFT not authorised for a loan of this amount");           
        require(USD.balanceOf(address(this)) >= _loan_value, "Bank has insufficient funds");

        uint256 current_time = block.timestamp;
        loan_details[msg.sender].loan_value = _loan_value;
        loan_details[msg.sender].startTime = current_time;
        loan_details[msg.sender].nft_address = _NFTaddress;
        loan_details[msg.sender].id = _id;

        IERC1155 NFTaddress = IERC1155(_NFTaddress);
        NFTaddress.safeTransferFrom(msg.sender, address(this), _id, 1, "");
        USD.transfer(msg.sender, _loan_value);
        emit Loan(msg.sender, _loan_value, current_time, _NFTaddress, _id);
    }

    function repayLoan() public {
        uint256 loan_value = loan_details[msg.sender].loan_value;
        require(loan_value != 0, "No outstanding loan");
        address _NFTaddress = loan_details[msg.sender].nft_address;
        uint256 id = loan_details[msg.sender].id;
        delete loan_details[msg.sender];

        IERC1155 NFTaddress = IERC1155(_NFTaddress);
        USD.transferFrom(msg.sender, address(this), viewRepaymentAmount());
        NFTaddress.safeTransferFrom(address(this), msg.sender, id, 1, "");
        emit LoanRepayed(msg.sender, loan_value, viewRepaymentAmount(), _NFTaddress, id);
    }

    function viewLoanDetails() public view returns (uint256, address, uint256) {
        return (loan_details[msg.sender].loan_value, loan_details[msg.sender].nft_address, loan_details[msg.sender].id);
    }

    function viewRepaymentAmount() public view returns (uint256) {
        return (loan_details[msg.sender].loan_value + loan_details[msg.sender].loan_value * (rate/365/100)*loan_duration(loan_details[msg.sender].startTime));
    }

    function loan_duration(uint256 _startTime) private view returns (uint256) {
        uint256 diff = block.timestamp - _startTime;
        return diff/ 60 / 60 / 24;
        
    }
}

