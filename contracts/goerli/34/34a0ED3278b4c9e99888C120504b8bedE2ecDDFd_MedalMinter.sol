pragma solidity ^0.8.13;

import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";

import "./interfaces/IArcadeItems.sol";
import "./interfaces/external/IDelegationRegistry.sol";

/**
 * >>> Join the Resistance <<<
 * >>>   https://nfa.gg/   <<<
 * @title   NonFungibleArcade Miltec Medal Minter
 * @notice  Claim a Miltec Medal
 * @dev     Supports delegate.cash
 * @author  BowTiedPickle
 */
contract MedalMinter is Ownable, Pausable {
    /// @notice Mapping of ArcadePass token ID to mint status. True if minted.
    mapping(uint256 => bool) public passMinted;

    /// @notice Whitelist merkle root
    bytes32 public merkleRoot;

    /// @notice Address of ArcadePass contract
    IERC721 public immutable pass;
    /// @notice Address of ArcadeItems contract
    IArcadeItems public immutable items;
    /// @notice Address of delegate.cash Delegation Registry contract
    IDelegationRegistry public immutable delegationRegistry;

    /**
     * @dev     Deploys in paused state
     * @param   _owner                  Address to receieve ownership
     * @param   _pass                   Contract address of Arcade Pass NFT
     * @param   _items                  Contract address of Arcade Items NFT
     * @param   _delegationRegistry     Contract address of delegate.cash registry
     * @param   _initialRoot            Merkle Root of the whitelist tree
     */
    constructor(
        address _owner,
        IERC721 _pass,
        IArcadeItems _items,
        IDelegationRegistry _delegationRegistry,
        bytes32 _initialRoot
    ) {
        pass = _pass;
        items = _items;
        delegationRegistry = _delegationRegistry;
        merkleRoot = _initialRoot;

        _transferOwnership(_owner);
        _pause();
    }

    // ---------- Public Functions ----------

    /**
     * @notice  Mint a Medal
     * @dev     Each pass may only mint once!
     * @dev     Pass holder must be msg.sender
     * @param   _passId     Arcade Pass token ID
     * @param   _medalId    Arcade Items token Id
     * @param   _proof      Merkle proof
     */
    function mint(
        uint256 _passId,
        uint256 _medalId,
        bytes32[] memory _proof
    ) external whenNotPaused {
        require(pass.ownerOf(_passId) == msg.sender, "Minter: Not pass owner");
        _mint(msg.sender, _passId, _medalId, _proof);
    }

    /**
     * @notice  Mint a Medal supporting
     * @dev     Each pass may only mint once!
     * @dev     Supports delegate.cash vault, contract, or token delegation. Must specify a recipient.
     * @param   _recipient  Address to mint the Medal to
     * @param   _vault      Address of the Arcade Pass holder
     * @param   _passId     Arcade Pass token ID
     * @param   _medalId    Arcade Items token Id
     * @param   _proof      Merkle proof
     */
    function mintDelegated(
        address _recipient,
        address _vault,
        uint256 _passId,
        uint256 _medalId,
        bytes32[] memory _proof
    ) external whenNotPaused {
        require(delegationRegistry.checkDelegateForToken(msg.sender, _vault, address(pass), _passId), "Minter: Not delegated");
        require(pass.ownerOf(_passId) == _vault, "Minter: Vault not pass owner");
        _mint(_recipient, _passId, _medalId, _proof);
    }

    // ---------- Internal Functions ----------

    function _mint(
        address _recipient,
        uint256 _passId,
        uint256 _medalId,
        bytes32[] memory _proof
    ) internal {
        require(!passMinted[_passId], "Minter: Double mint");
        bytes32 leaf = keccak256(abi.encodePacked(_passId, _medalId));
        require(MerkleProof.verify(_proof, merkleRoot, leaf), "Minter: Proof");

        passMinted[_passId] = true;

        items.mint(_recipient, _medalId, 1);
    }

    // ---------- Admin Functions ----------

    /**
     * @notice  Set whether the contract is paused or unpaused
     * @param   _status     True for paused, false for unpaused
     */
    function setPauseStatus(bool _status) external onlyOwner {
        if (_status) {
            _pause();
        } else {
            _unpause();
        }
    }

    /**
     * @notice  Set a new Merkle root
     * @param   _newRoot    New root of the Merkle tree
     */
    function setMerkleRoot(bytes32 _newRoot) external onlyOwner {
        emit NewMerkleRoot(merkleRoot, _newRoot);
        merkleRoot = _newRoot;
    }

    // ---------- Events ----------

    event MedalIdValiditySet(uint256 indexed medalId, bool validity);
    event NewMerkleRoot(bytes32 oldRoot, bytes32 newRoot);
}