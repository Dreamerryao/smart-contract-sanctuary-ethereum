pragma solidity ^0.8.0;

import '@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol';
import '@openzeppelin/contracts-upgradeable/token/ERC20/IERC20Upgradeable.sol';
import '@openzeppelin/contracts-upgradeable/token/ERC20/utils/SafeERC20Upgradeable.sol';
import '@openzeppelin/contracts-upgradeable/utils/structs/EnumerableSetUpgradeable.sol';
import '@openzeppelin/contracts-upgradeable/utils/CountersUpgradeable.sol';
import '@openzeppelin/contracts-upgradeable/token/ERC1155/utils/ERC1155HolderUpgradeable.sol';

import './libraries/FullMath.sol';

import './interfaces/ISmashitNFT.sol';

contract SmashitMarketplace is ERC1155HolderUpgradeable, OwnableUpgradeable {
    using EnumerableSetUpgradeable for EnumerableSetUpgradeable.UintSet;
    using SafeERC20Upgradeable for IERC20Upgradeable;
    using CountersUpgradeable for CountersUpgradeable.Counter;

    ISmashitNFT public SmashitNFT;
    IERC20Upgradeable public PayingToken;

    CountersUpgradeable.Counter private _offerID;

    uint256 public listingFee;
    uint256 public platformFee;
    uint256 public royalty;

    mapping(uint256 => OfferInfo) public offerInfoByID;

    EnumerableSetUpgradeable.UintSet internal offers;
    mapping(address => EnumerableSetUpgradeable.UintSet) internal addressToOfferIDs;

    event PriceChanged(uint256 offerID, uint256 newPrice, address seller);
    event Canceled(uint256 offerID, address seller);
    event Filled(uint256 offerID, uint256 price, uint256 amount, address seller, address buyer, bool inNative);
    event ListingFeeChanged(uint256 newValue);
    event PlatformFeeChanged(uint256 newValue);
    event RoyaltyChanged(uint256 newValue);

    struct OfferInfo {
        address seller;
        address explicitBuyer;
        uint256 amount;
        uint256 price;
        uint256 tokenID;
        bool inNative;
    }

    function initialize(ISmashitNFT _SmashitNFT, IERC20Upgradeable _PayingToken) external initializer {
        __Ownable_init();
        SmashitNFT = _SmashitNFT;
        PayingToken = _PayingToken;
    }

    /**
     * @return Array of present offers IDs
     */
    function getPresentOffers() external view returns (uint256[] memory) {
        return offers.values();
    }

    /**
     * @param seller Address whose offers ID to return
     * @return Array of owner's offers ID
     */
    function getIDsByAddress(address seller) external view returns (uint256[] memory) {
        return addressToOfferIDs[seller].values();
    }

    /**
     * @dev Changes the price of a present NFT owned by the caller.
     * Set newPrice = 0 to disallow purchasing
     * @param offerID The ID of an offer which price is changing
     * @param newPrice A new price
     * @param inNative Pass _true_ if want to sell in native tokens (matic)
     * pass _false_ if want to sell in ERC20 tokens
     */
    function changeOfferPrice(
        uint256 offerID,
        uint256 newPrice,
        bool inNative
    ) external {
        require(offers.contains(offerID), 'SmashitMP: no such offer');
        OfferInfo storage offer = offerInfoByID[offerID];

        address seller = offer.seller;
        require(seller == _msgSender(), 'SmashitMP: not owner');

        offer.price = newPrice;
        offer.inNative = inNative;

        emit PriceChanged(offerID, newPrice, seller);
    }

    /**
     * @dev Removes an offer and transfers NFTs back to the seller
     * @param offerID The ID of an offer to remove
     */
    function cancelOffer(uint256 offerID) external {
        require(offers.contains(offerID), 'SmashitMP: no such offer');

        OfferInfo memory offer = offerInfoByID[offerID];
        require(offer.seller == _msgSender(), 'SmashitMP: not seller');

        SmashitNFT.safeTransferFrom(address(this), _msgSender(), offer.tokenID, offer.amount, '');

        emit Canceled(offerID, offer.seller);

        addressToOfferIDs[offer.seller].remove(offerID);
        delete (offerInfoByID[offerID]);
        offers.remove(offerID);
    }

    function _fillOffer(
        OfferInfo memory offer,
        uint256 offerID,
        uint256 amount
    ) private {
        require(offer.price > 0, 'SmashitMP: offer is disallowed');

        require(
            offer.explicitBuyer == address(0) || _msgSender() == offer.explicitBuyer,
            'SmashitMP: you are not buyer'
        );

        address author = SmashitNFT.tokenAuthor(offer.tokenID);

        uint256 totalPrice = offer.price * amount;

        if (offer.inNative) {
            require(msg.value >= totalPrice, 'SmashitMP: not enough value');
        }

        // if author is zero address than royalty is 0
        uint256 currentRoyalty = 0;

        if (author != address(0)) {
            currentRoyalty = FullMath.mulDiv(totalPrice, royalty, 1e6);
            if (offer.inNative) {
                AddressUpgradeable.sendValue(payable(author), currentRoyalty);
            } else {
                PayingToken.safeTransferFrom(_msgSender(), author, currentRoyalty);
            }
        }

        uint256 currentPlatformFee = FullMath.mulDiv(totalPrice - currentRoyalty, platformFee, 1e6);

        if (offer.inNative) {
            AddressUpgradeable.sendValue(payable(offer.seller), totalPrice - currentRoyalty - currentPlatformFee);
        } else {
            PayingToken.safeTransferFrom(_msgSender(), offer.seller, totalPrice - currentRoyalty - currentPlatformFee);
            PayingToken.safeTransferFrom(_msgSender(), address(this), currentPlatformFee);
        }

        SmashitNFT.safeTransferFrom(address(this), _msgSender(), offer.tokenID, amount, '');

        emit Filled(offerID, offer.price, amount, offer.seller, _msgSender(), offer.inNative);
    }

    /**
     * @dev Entirely (full amount) fills offer with passed ID
     * @param offerID The ID of an offer to execute
     */
    function fillOffer(uint256 offerID) external payable {
        require(offers.contains(offerID), 'SmashitMP: no such offer');
        OfferInfo memory offer = offerInfoByID[offerID];

        require(offer.amount > 0, 'SmashitMP: offer is empty');

        _fillOffer(offer, offerID, offer.amount);

        addressToOfferIDs[offer.seller].remove(offerID);
        delete (offerInfoByID[offerID]);
        offers.remove(offerID);
    }

    /**
     * @dev fills offer with passed ID by certain amount which is less than entire
     * @param offerID The ID of an offer to execute
     * @param amount The amount of NFTs to buy
     */
    function fillOffer(uint256 offerID, uint256 amount) external payable {
        require(amount > 0, 'SmashitMP: amount must be greater than zero');
        require(offers.contains(offerID), 'SmashitMP: no such offer');

        OfferInfo memory offer = offerInfoByID[offerID];

        // if amount == offer.amount please use function without 'amount' param
        require(offer.amount > amount, 'SmashitMP: not enough NFTs in the offer');

        _fillOffer(offer, offerID, amount);

        offerInfoByID[offerID].amount = offer.amount - amount;
    }

    /**
     * @dev Creates a new offer
     * @param tokenID The ID of an NFT to offer
     * @param amount The amount of NFTs to offer
     * @param price The price of 1 NFT in the offer
     * @param explicitBuyer The only address who is able to fill the offer
     * pass address(0) (zero address) if want to allow everyone to fill
     * @param inNative False if the offer has to be filled with Paying Token
     *                 True if the offer has to be filled with Native Token
     */
    function newOffer(
        uint256 tokenID,
        uint256 amount,
        uint256 price,
        address explicitBuyer,
        bool inNative
    ) external payable {
        require(msg.value >= listingFee, 'SmashitMP: not enough msg.value for listing');

        SmashitNFT.safeTransferFrom(_msgSender(), address(this), tokenID, amount, '');

        uint256 currentOfferID = _offerID.current();

        offers.add(currentOfferID);
        addressToOfferIDs[_msgSender()].add(currentOfferID);

        offerInfoByID[currentOfferID] = OfferInfo(_msgSender(), explicitBuyer, amount, price, tokenID, inNative);

        _offerID.increment();
    }

    //// MANAGEMENT ////

    /**
     * @dev Transfers all paying tokens to the owner
     */
    function collectPlatformFee() external onlyOwner {
        PayingToken.transfer(owner(), PayingToken.balanceOf(address(this)));
    }

    function setListingFee(uint256 _listingFee) external onlyOwner {
        listingFee = _listingFee;

        emit ListingFeeChanged(_listingFee);
    }

    /**
     * @param _platformFee Platform fee presented as (100% = 1e6, 10% = 1e5 etc.)
     */
    function setPlatformFee(uint256 _platformFee) external onlyOwner {
        require(_platformFee <= 1e6, 'SmashitMP: max value is 1000000');

        platformFee = _platformFee;

        emit PlatformFeeChanged(_platformFee);
    }

    /**
     * @param _royalty Royalty fee presented as (100% = 1e6, 10% = 1e5 etc.)
     */
    function setRoyalty(uint256 _royalty) external onlyOwner {
        require(_royalty <= 1e6, 'SmashitMP: max value is 1000000');

        royalty = _royalty;

        emit RoyaltyChanged(_royalty);
    }

    /**
     * @dev Transfers all native tokens from the marketplace to the owner
     */
    function withdraw() external onlyOwner {
        AddressUpgradeable.sendValue(payable(owner()), address(this).balance);
    }
}

