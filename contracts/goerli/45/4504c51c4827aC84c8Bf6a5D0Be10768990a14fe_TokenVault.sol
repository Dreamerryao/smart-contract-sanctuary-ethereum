pragma solidity ^0.8.14;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/token/ERC721/utils/ERC721Holder.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "./FractionalNFT.sol";

contract TokenVault is FractionalNFT, ERC721Holder, Ownable, ReentrancyGuard {
    /// @notice The ERC721 token address of the fractional NFT.
    address public collection;

    /// @notice The ERC721 token ID of the fractional NFT.
    uint256 public tokenId;

    /// @notice The price of fraction of the fractionalized NFT for the primary sale.
    uint256 public listPrice;

    /// @notice The address who initially deposited the NFT.
    address public curator;

    /// @notice The platform fee paid to the curator.
    uint256 public fee;

    /// @notice The start date of primary sale.
    uint256 public start;

    /// @notice The end date of primary sale.
    uint256 public end;

    /// @notice The address of ERC20 payment token.
    address public paymentToken;

    /// @notice The address of virtual account.
    address public virtualAccount;

    enum State { Inactive, Fractionalized}
    State public state;

    /// @notice Emitted when an NFT is transferred to the token vault NFT contract.
    /// @param sender The address that sent the NFT.
    event DepositedERC721(address indexed sender);

    /// @notice Emitted when a user successfully fractionalizes an NFT and receives the total supply of the newly created ERC20 token.
    /// @param collection The address of the newly fractionalized NFT.
    /// @param tokenId The contract address of the newly created ERC20 token.
    event Fractionalized(address indexed collection, uint256 indexed tokenId);

    /// @notice Emitted when a user successfully purchase some amount of NFT fractions.
    /// @param buyer The buyer of the fractions.
    /// @param value The value of ether send.
    /// @param amount The amount of bought fractions.
    event Purchased(address buyer, uint256 value, uint256 amount);

    /// @notice Emitted when a user finalize sale.
    event Burned(address sender, uint256 amount);

    /// @notice Emitted when the curator change curator account address.
    event UpdateCurator(address indexed curator);
    /// @notice Emitted when the curator change their fee.
    event UpdateFee(uint256 fee);

    /// @notice Emitted when the curator successfully withdraw funds from the vault.
    event WithdrawETH(address indexed receiver);
    /// @notice Emitted when the curator successfully withdraw ERC20 supply from the vault in case the sale has not happened.
    event WithdrawERC20(address indexed token, address indexed receiver);
    /// @notice Emitted when the curator successfully withdraw ERC721 token from the vault in case the sale has not happened.
    event WithdrawERC721(address indexed collection, uint256 indexed tokenId, address indexed receiver);

    constructor(address _curator, uint256 _price, uint256 _fee, string memory _name, string memory _symbol, string memory _uri) FractionalNFT(_name, _symbol, _uri) {
        require(_curator != address(0), "ANG: zero address not allowed");
        curator = _curator;
        listPrice = _price;
        fee = _fee;
        state = State.Inactive;
        _setURI(_uri);
    }

    /// @notice Create a fractionalized NFT: Lock the NFT in the contract; create a new ERC20 token, as specified;
    ///         and transfer the total supply of the token to the curator.
    /// @param _from The address of the curator/NFT owner.
    /// @param _collection The address of the NFT that is to be fractionalized.
    /// @param _tokenId The token ID of the NFT that is to be fractionalized.
    /// @param _supply The count of fractions of the fractionalized NFT - the total supply amount of vault ERC20 tokens.
    /// @param _start The start date of primary sale.
    /// @param _end The end date of primary sale.
    /// @dev Note the NFT must be approved for transfer by the owner of NFT token ID.
    function fractionalize(
        address _from,
        address _collection,
        uint256 _tokenId,
        uint256 _supply,
        uint256 _start,
        uint256 _end
    ) public onlyOwner {
        require(state == State.Inactive, "ANG: state should be inactive");
        require(
            _start >= block.timestamp,
            "ANG: start primary sale should be set up"
        );

        collection = _collection;
        tokenId = _tokenId;
        start = _start;
        end = _end;

        IERC721(collection).safeTransferFrom(_from, address(this), _tokenId);
        _mint(address(this), _supply);
        state = State.Fractionalized;

        emit Fractionalized(collection, tokenId);
    }

    /// @notice Update primary sale date.
    /// @param _start The start date of primary sale.
    /// @param _end The end date of primary sale.
    function updateSaleDate(uint256 _start, uint256 _end) external onlyOwner {
        start = _start;
        end = _end;
    }

    /// @notice Set primary sale listing price.
    /// @param _listPrice The new listing price.
    function setPrice(uint256 _listPrice) external onlyOwner {
        listPrice = _listPrice;
    }

    /// @notice Set tokenURI.
    /// @param _uri The new tokenURI.
    function setURI(string memory _uri) external onlyOwner {
        _setURI(_uri);
    }

    /// @dev Set payment token.
    function setPaymentToken(address _paymentToken) external onlyOwner {
        paymentToken = _paymentToken;
    }

    /// @dev Set virtual account.
    function setVirtualAccount(address _virturalAccount) external onlyOwner {
        virtualAccount = _virturalAccount;
    }

    /// @notice Allows an account to purchase vault fraction tokens.
    /// @param _amount The amount of the fractions of fractional nft.
    function purchase(uint256 _amount) external payable nonReentrant {
        _validateState();
        require((_amount * listPrice) == msg.value, "ANG: not enough ether sent");
        _purchase(_msgSender(), _amount);
    }

    /// @notice Allows an account to purchase vault fractions using ERC20 payment token.
    /// @param _amount The quantity of vault fractions that is purchase amount.
    /// @param _value The amount of payment token to be paid in wei.
    /// @dev Note The TokenVault should be approved as a spender for value amount in wei.
    function purchaseWithERC20(uint256 _amount, uint256 _value) external {
        _validateState();
        require(address(virtualAccount) != address(0), "ANG: virtual account should be set up");
        require(address(paymentToken) != address(0), "ANG: payment token should be set up");
        require(IERC20(paymentToken).allowance(_msgSender(), address(this)) == _value, "ANG: not upproved as a spender");
        require((_amount * listPrice) == _value, "ANG: incorrect value token sent");

        IERC20(paymentToken).transferFrom(_msgSender(), address(this), _amount);

        if (_msgSender() == virtualAccount) {
            _purchase(curator, _amount);
        } else {
            _purchase(_msgSender(), _amount);
        }
    }

    /// @dev Finalize sale.
    function finalizeSale() external {
        require(block.timestamp > end, "ANG: the primary sale is not finished yet");
        require(end > 0, "ANG: the primary sale end date is not set");
        require(_msgSender() == curator, "ANG: not curator");

        uint256 notSold = balanceOf(address(this));
        require(notSold > 0, "ANG: nothing to burn");
        _burn(address(this), notSold);

        emit Burned(_msgSender(), notSold);
    }

    /// @notice Allow curator to update the curator address.
    /// @param _curator new curator address.
    function updateCurator(address _curator) external {
        require(_msgSender() == curator, "ANG: not curator");
        curator = _curator;
        emit UpdateCurator(_curator);
    }

    /// @notice Allow the curator to change their fee.
    /// @param _fee The new fee.
    function updateFee(uint256 _fee) external {
        require(_msgSender() == curator, "ANG: not curator");
        fee = _fee;
        emit UpdateFee(_fee);
    }

    /// @notice Withdraw ether from this contract into _receiver wallet.
    function withdrawETH(address _receiver) external payable {
        require(_msgSender() == curator, "ANG: not curator");
        (bool success, ) = payable(_receiver).call{value: address(this).balance}("");
        require(success, "ANG: withdraw failed");
        emit WithdrawETH(_receiver);
    }

    /// @notice Withdraw payment token from this contract into _receiver wallet.
    function withdrawERC20(address _token, address _receiver) external {
        require(_msgSender() == curator, "ANG: not curator");
        IERC20(_token).transfer(_receiver, balanceOf(address(this)));
        emit WithdrawERC20(_token, _receiver);
    }

    /// @notice Withdraw an ERC721 token from this contract into _receiver wallet in case the primary sale has not happened or emergency.
    function withdrawERC721(address _collection, uint256 _tokenId, address _receiver) external {
        require(_msgSender() == curator, "ANG: not curator");
        IERC721(_collection).safeTransferFrom(address(this), _receiver, _tokenId);
        emit WithdrawERC721(_collection, _tokenId, _receiver);
    }

    /// @dev Purchase tokens via virtual wallet
    receive() external payable {
        _validateState();
        uint256 _amount = msg.value / listPrice;
        _purchase(curator, _amount);
    }

    fallback() external payable {
        revert();
    }

    /// @dev Validate state and timestamp for primary sale
    function _validateState() internal view {
        require(state == State.Fractionalized, "ANG: state should be fractionalized");
        require(block.timestamp >= start, "ANG: the primary sale is not started");
        if (end > 0) {
            require(block.timestamp < end,"ANG: the primary sale is already finished");
        }
    }

    /// @dev Validate available amount and transfer purchased tokens
    function _purchase(address _account, uint256 _amount) internal {
        uint256 _supply = balanceOf(address(this));
        require(_amount <= _supply, "ANG: exceeds the total supply");
        _transfer(address(this), _account, _amount);

        emit Purchased(_msgSender(), msg.value, _amount);
    }

    /// @dev Required to use safeTransferFrom() from OpenZeppelin's ERC721 contract (when transferring NFTs to this contract).
    function onERC721Received(address, address, uint256, bytes memory) public override returns (bytes4) {
        emit DepositedERC721(msg.sender);
        return
            bytes4(
                keccak256("onERC721Received(address,address,uint256,bytes)")
            );
    }
}

