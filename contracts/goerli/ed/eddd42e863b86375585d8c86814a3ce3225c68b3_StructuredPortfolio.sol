        requireManager();

        uint256 loanId = fixedInterestOnlyLoans.issueLoan(
            IERC20WithDecimals(address(asset)),
            params.principal,
            params.periodCount,
            params.periodPayment,
            params.periodDuration,
            params.recipient,
            params.gracePeriod,
            params.canBeRepaidAfterDefault
        );

        emit LoanAdded(loanId);
    }

