        for (uint256 i = 0; i < tranchesCount; i++) {
            TrancheInitData memory initData = tranchesInitData[i];
            tranches.push(initData.tranche);
            initData.tranche.setPortfolio(this);
            tranchesData.push(TrancheData(0, initData.targetApy, initData.minSubordinateRatio, 0, 0));
        }

        emit PortfolioInitialized(tranches);
    }

    function getTranches() external view returns (ITrancheVault[] memory) {
        return tranches;
    }

    function getTranchesData() external view returns (TrancheData[] memory) {
        return tranchesData;
    }

    function getDistributedAssetsForTranche(uint256 trancheIdx) external view returns (uint256) {
        return tranchesData[trancheIdx].distributedAssets;
    }

    function getOptimisticWaterfallValueForTranche(uint256 trancheIdx) external view returns (uint256) {
        return tranchesData[trancheIdx].optimisticWaterfallValue;
    }

    function _checkTranchesRatios() internal view {
        uint256 subordinateValue = tranches[0].totalAssets();

        for (uint256 i = 1; i < tranchesCount; i++) {
            TrancheData memory trancheData = tranchesData[i];
            uint256 trancheValue = tranches[i].totalAssets();
            uint256 subordinateValueInBps = subordinateValue * BASIS_PRECISION;

            uint256 lowerBound = trancheValue * trancheData.minSubordinateRatio;
            bool isMinRatioSatisfied = subordinateValueInBps >= lowerBound;
            require(
                trancheData.minSubordinateRatio == 0 || isMinRatioSatisfied,
                string(
                    abi.encodePacked(
                        "StructuredPortfolio: Tranche ",
                        StringsUpgradeable.toString(i),
                        " minimum subordinate ratio not met"
                    )
                )
            );

            subordinateValue += trancheValue;
        }
    }

    function start() external {
        _checkRole(MANAGER_ROLE);
        require(status == Status.Open, "StructuredPortfolio: Portfolio is not open");
        _checkTranchesRatios();
        for (uint256 i = 0; i < tranchesCount; i++) {
            ITrancheVault tranche = tranches[i];
            require(
                tranche.totalAssets() >= tranche.minSize(),
                string(abi.encodePacked("StructuredPortfolio: Tranche ", StringsUpgradeable.toString(i), " minimum size not met"))
            );
        }
        _changePortfolioStatus(Status.Live);
        startDate = block.timestamp;
        endDate = block.timestamp + portfolioDuration;

        for (uint256 i = 0; i < tranchesCount; i++) {
            tranchesData[i].initialValue = tranches[i].transferToPortfolio();
        }
    }

    function close() external {
        require(status != Status.Closed, "StructuredPortfolio: Portfolio is already closed");
        require(activeLoanIds.length == 0, "StructuredPortfolio: Cannot close portfolio with active loans");

        if (status == Status.Live) {
            if (!hasRole(MANAGER_ROLE, msg.sender)) {
                require(block.timestamp >= endDate, "StructuredPortfolio: Only manager can close before end date");
            }

            uint256[] memory trancheValues = calculateWaterfall();
            uint256 timePassed = _getTimePassedSinceStart();
            for (uint256 i = 0; i < tranchesCount; i++) {
                TrancheData storage trancheData = tranchesData[i];
                uint256 amount = trancheValues[i];
                trancheData.distributedAssets = amount;
                trancheData.optimisticWaterfallValue = _calculateOptimisticWaterfallValueForTranche(i, timePassed);
                asset.safeTransfer(address(tranches[i]), amount);
            }
        } else {
            if (!hasRole(MANAGER_ROLE, msg.sender)) {
                require(block.timestamp >= startDeadline, "StructuredPortfolio: Only manager can close before deadline");
            }
        }

        if (block.timestamp < endDate) {
            endDate = block.timestamp;
        }
        _changePortfolioStatus(Status.Closed);
    }

    function calculateWaterfall() public view returns (uint256[] memory) {
        uint256[] memory waterfall = new uint256[](tranchesCount);
        if (status != Status.Live) {
            return waterfall;
        }

        uint256 portfolioValue = totalAssets();
        uint256 totalWaterfallSum = 0;
        uint256 timePassed = _getTimePassedSinceStart();

        for (uint256 i = tranchesCount - 1; i > 0; i--) {
            uint256 optimisticTrancheValue = _calculateOptimisticWaterfallValueForTranche(i, timePassed);

            if (optimisticTrancheValue + totalWaterfallSum > portfolioValue) {
                waterfall[i] = portfolioValue - totalWaterfallSum;
                return waterfall;
            }
            waterfall[i] = optimisticTrancheValue;
            totalWaterfallSum += optimisticTrancheValue;
        }

        waterfall[0] = portfolioValue - totalWaterfallSum;

        return waterfall;
    }

    function calculateWaterfallForTranche(uint256 trancheIdx) public view returns (uint256) {
        require(trancheIdx < uint256(tranchesCount), "StructuredPortfolio: Tranche index out of bounds");
        return calculateWaterfall()[trancheIdx];
    }

    function _calculateOptimisticWaterfallValueForTranche(uint256 trancheIdx, uint256 timePassed) internal view returns (uint256) {
        if (trancheIdx == 0) {
            return 0;
        }
        TrancheData memory _trancheData = tranchesData[trancheIdx];
        uint256 optimisticTrancheValue = _trancheData.initialValue +
            (_trancheData.initialValue * _trancheData.targetApy * timePassed) /
            YEAR /
            BASIS_PRECISION;
        return optimisticTrancheValue;
    }

    function _getTimePassedSinceStart() internal view returns (uint256) {
        return _min(block.timestamp, endDate) - startDate;
    }

    function addLoan(AddLoanParams calldata params) external {
        _requireLiveStatus();
        uint256 loanDuration = params.periodCount * params.periodDuration;
        require(block.timestamp + loanDuration <= endDate, "StructuredPortfolio: Loan duration exceeds portfolio end date");
        _addLoan(params);
    }

    function fundLoan(uint256 loanId) external {
        _requireLiveStatus();
        _fundLoan(loanId);
        uint256 loanEndDate = fixedInterestOnlyLoans.endDate(loanId);
        require(loanEndDate <= endDate, "StructuredPortfolio: Loan duration exceeds portfolio end date");
    }

    function repayLoan(uint256 loanId) external {
        require(status != Status.Open, "StructuredPortfolio: Cannot repay during Open status");
        if (status == Status.Closed) {
            _repayLoanAfterClose(loanId);
            return;
        }
        _repayLoan(loanId);
    }

    function _repayLoanAfterClose(uint256 loanId) internal {
        uint256 undistributedAssets = _repayFixedInterestOnlyLoan(loanId);

        for (uint256 i = tranchesCount - 1; i > 0; i--) {
            if (undistributedAssets == 0) {
                return;
            }
            TrancheData memory trancheData = tranchesData[i];
            uint256 trancheFreeCapacity = trancheData.optimisticWaterfallValue - trancheData.distributedAssets;
            uint256 trancheShare = _min(trancheFreeCapacity, undistributedAssets);

            if (trancheShare == 0) {
                continue;
            }

            trancheData.distributedAssets += trancheShare;
            undistributedAssets -= trancheShare;

            asset.transferFrom(msg.sender, address(tranches[i]), trancheShare);
        }

        if (undistributedAssets == 0) {
            return;
        }

        tranchesData[0].distributedAssets += undistributedAssets;
        asset.transferFrom(msg.sender, address(tranches[0]), undistributedAssets);
    }

    function totalAssets() public view returns (uint256) {
        if (status == Status.Live) {
            return liquidAssets() + loansValue();
        }

        uint256 tranchesValue;
        for (uint256 i = 0; i < tranchesCount; i++) {
            tranchesValue += tranches[i].totalAssets();
        }

        return tranchesValue;
    }

    function liquidAssets() public view returns (uint256) {
        return asset.balanceOf(address(this));
    }

    function loansValue() public view returns (uint256) {
        uint256[] memory _loans = activeLoanIds;
        uint256 _value = 0;
        for (uint256 i = 0; i < _loans.length; i++) {
            uint256 instrumentId = _loans[i];
            _value += _calculateLoanValue(instrumentId);
        }

        return _value;
    }

    function _calculateLoanValue(uint256 instrumentId) internal view returns (uint256) {
        IFixedInterestOnlyLoans.LoanMetadata memory loan = fixedInterestOnlyLoans.loanData(instrumentId);
        // @TODO should be excluded from activeLoanIds
        if (loan.status == FixedInterestOnlyLoanStatus.Repaid) {
            return 0;
        }

        uint256 accruedInterest = _calculateAccruedInterest(loan.periodPayment, loan.periodDuration, loan.periodCount, loan.endDate);
        uint256 interestPaidSoFar = loan.periodsRepaid * loan.periodPayment;

        if (loan.principal + accruedInterest <= interestPaidSoFar) {
            return 0;
        } else {
            return loan.principal + accruedInterest - interestPaidSoFar;
        }
    }

    function _calculateAccruedInterest(
        uint256 periodPayment,
        uint256 periodDuration,
        uint256 periodCount,
        uint256 loanEndDate
    ) internal view returns (uint256) {
        uint256 fullInterest = periodPayment * periodCount;
        if (block.timestamp >= loanEndDate) {
            return fullInterest;
        }

        uint256 loanDuration = (periodDuration * periodCount);
        uint256 passed = block.timestamp + loanDuration - loanEndDate;

        return (fullInterest * passed) / loanDuration;
    }

    function _requireLiveStatus() internal view {
        require(status == Status.Live, "StructuredPortfolio: Portfolio is not live");
    }

    function _changePortfolioStatus(Status newStatus) internal {
        status = newStatus;
        emit PortfolioStatusChanged(newStatus);
    }

    function _min(uint256 x, uint256 y) internal pure returns (uint256) {
        return x > y ? y : x;
    }
}