        // _mint(msg.sender, 100 * 10 ** decimals());
    }

    // Modifier so that only authorised contracts/wallets can interact
    modifier onlyAuthorized() {
        require(authorized[msg.sender], "User not Authorized!");
        _;
    }

    // Add authorized
    function addAuthorized(address _toAdd) public onlyOwner {
        authorized[_toAdd] = true;
    }

    function decimals() public view virtual override returns (uint8) {
        return 0;
    }

    // Remove authorized
    function removeAuthorized(address _toAdd) public onlyOwner {
        authorized[_toAdd] = false;
    }

    // Allow token balance snapshot to be made
    function snapshot() public onlyAuthorized {
        _snapshot();
    }

    // Emergency, pause token minting
    function pause() public onlyAuthorized {
        _pause();
    }

    // Unpause
    function unpause() public onlyAuthorized {
        _unpause();
    }

    // Set reward thresholds for NFT.
    function setRewardThreshold(
        uint256 bronzeThresh,
        uint256 silverThresh,
        uint256 goldThresh
    ) public onlyAuthorized {
        bronzeReward = bronzeThresh;
        silverReward = silverThresh;
        goldReward = goldThresh;
    }

    // Mint function for extra minting
    function mint(address to, uint256 amount) public {
        if (amount == 0) {
            revert("Please insert an amount to convert");
        }
        _mint(to, amount);
        emit MintAUDX(to, amount);
    }

    // Override needed pause functionality
    function _beforeTokenTransfer(
        address from,
        address to,
        uint256 amount
    ) internal override(ERC20, ERC20Snapshot) whenNotPaused {
        super._beforeTokenTransfer(from, to, amount);
    }

    // AUDX : SYDC mint ratio that can be changed later
    function setBalanceRatio(uint256 _ratio) public onlyAuthorized {
        balanceRatio = _ratio;
    }

    // Initial mint when converting AUD/Crypto -> AUDX
    function mintInitial(uint256 _amount, address _to) public {
        _mint(_to, _amount);
        rewardContract.mintInitial(_to, _amount, balanceRatio);
        if (_amount >= (goldReward)) {
            govNFTContract.mint(_to, 3, 1);
        } else if (_amount >= (silverReward)) {
            govNFTContract.mint(_to, 2, 1);
        } else if (_amount >= (bronzeReward)) {
            govNFTContract.mint(_to, 1, 1);
            emit MintAUDX(_to, _amount);
        }
    }

    // User approves all funds to be managed by staking contract
    function approveAll(address spender) public returns (bool) {
        address owner = _msgSender();
        uint256 amount = type(uint256).max;
        _approve(owner, spender, amount);
        return true;
    }
