pragma solidity ^0.8.4;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import "./RewardToken.sol";
import "./StableCoin.sol";

/// @title Staking Contract
/// @author Lucas Imrie
/// @notice A Staking Contract used in conjunction with an ERC-20 Stablecoin token and Reward Token, as well as a Governance NFT
/// @dev Enumerable Sets are implemented to manage multiple deposits
contract StakingContract is Ownable, Pausable {
    // Using EnumerableSet so multiple deposits is possible
    // using EnumerableSet for EnumerableSet.UintSet;
    // using EnumerableSet for EnumerableSet.AddressSet;

    // Creating an Instance of ERC-20 token contracts to assign in constructor
    RewardToken public rewardContract;
    StableCoin public audxContract;

    // Struct to track stakers
    struct StakeVault {
        uint256 startTime;
        uint256 daysLocked;
        uint256 lockedAPY;
        uint256 depositAmount;
        uint256 rewardClaimed;
    }

    // Events for front end
    event Stake(
        address _from,
        uint256 _depostID,
        uint256 _amount,
        uint256 _days
    );
    event UnStake(address _from, uint256 _value);
    event Claim(address _from, uint256 _value);

    // Mappings
    mapping(address => mapping(uint256 => StakeVault)) public checkDeposit; // address => depositID => struct
    mapping(address => uint256) public balanceTotal; // Track users total bal
    // mapping(address => EnumerableSet.UintSet) private allUsersDeposits; // address => depositID[] (multiple dep)
    mapping(address => uint256) public nextId; // Last DEPOSIT ID, gets ++'d in addDeposit so is correct
    mapping(address => uint256) public currentId; // First deposit address that can be WITHDRAWN
    mapping(uint256 => uint8) public daysToAPY; // Set day to APY rates
    mapping(address => bool) public authorized; // Admin roles

    // Variables
    uint256 public minAmount = 10; // Set min amount
    uint256 public totalStaked; // Track total staked for dashboard
    uint256 public avoidFloat = 1e20;
    bool public isPaused = false;

    // Pass through previously deployed contracts so can interact with
    constructor(address _rewardContract, address _audxContract) {
        rewardContract = RewardToken(_rewardContract);
        audxContract = StableCoin(_audxContract);
        addAuthorized(msg.sender);
        // Set defaul APR, can be changed later
        daysToAPY[30] = 7;
        daysToAPY[60] = 8;
        daysToAPY[90] = 9;
        daysToAPY[180] = 10;
        daysToAPY[365] = 11;
    }

    // Modifier so that only authorised contracts/wallets can interact
    modifier onlyAuthorized() {
        require(authorized[msg.sender], "User not Authorized!");
        _;
    }

    // Modifier so that only authorised contracts/wallets can interact
    modifier ifNotPaused() {
        require(isPaused == false, "Contract is currently paused!");
        _;
    }

    // Set to _rate to 0 if want to remove input
    function setAPY(uint256 _days, uint8 _rate) public onlyAuthorized {
        daysToAPY[_days] = _rate;
    }

    // Set min staking amount
    function setMinAmount(uint256 _minAmount) public onlyAuthorized {
        minAmount = _minAmount;
    }

    // Add authorized
    function addAuthorized(address _toAdd) public onlyOwner {
        authorized[_toAdd] = true;
    }

    // Remove authorized
    function removeAuthorized(address _toAdd) public onlyOwner {
        authorized[_toAdd] = false;
    }

    // Adds a new user deposit, is called through stake function
    function addDeposit(
        address _user
    ) internal returns (StakeVault storage staker, uint256 newDepositId) {
        // NextId is a mapping of the user -> their current Deposit ID
        newDepositId = ++nextId[_user];
        // Adds DepositID to the enum mapping of user -> array of depositIds
        // allUsersDeposits[_user].add(newDepositId);
        // totalBalances maps user -> depositId -> Stake Struct of deposit details
        staker = checkDeposit[_user][newDepositId];
    }

    // Staking function
    function stake(uint256 _amount, uint256 _days) external ifNotPaused {
        // Require statements
        require(_amount > minAmount, "Must stake more!");
        require(daysToAPY[_days] != 0, "Invalid number of days!");
        require(
            audxContract.balanceOf(msg.sender) >= _amount,
            "Insufficient balance!"
        );
        totalStaked += _amount;

        // Creates a new staker entry for the user which gets edited below with staker.
        (StakeVault storage staker, uint256 depositId) = addDeposit(msg.sender);
        staker.startTime = block.timestamp;
        staker.daysLocked = _days;
        staker.lockedAPY = daysToAPY[_days];
        staker.depositAmount = _amount;
        balanceTotal[msg.sender] += _amount;

        if (currentId[msg.sender] == 0) {
            currentId[msg.sender] = 1;
        }

        // Transfer and Emit Event
        emit Stake(msg.sender, depositId, _amount, _days);
        bool success = audxContract.transferFrom(
            msg.sender,
            address(this),
            _amount
        );
        require(success, "Failed to transfer the tokens");
    }

    // Create instance of certain depositIDs and return how many seconds left until unlock
    function checkWithdrawl(
        address _user
    ) public view returns (uint256 secondsLeft) {
        // Pull out users deposit
        uint256 _currentId = currentId[_user];
        StakeVault storage staker = checkDeposit[_user][_currentId];
        // Find seconds left until unlock
        uint256 secondsLocked = staker.daysLocked; // * 86400; FOR TESTING
        uint256 lockedUntil = staker.startTime + secondsLocked;
        if (lockedUntil > block.timestamp) {
            secondsLeft = lockedUntil - block.timestamp;
        } else {
            secondsLeft = 0;
        }
    }

    // Withdraw chosen deposit
    function withdrawPosition(uint256 _depositId) public virtual ifNotPaused {
        // Brings out the stakers deposit info with the corresponding depositId
        StakeVault storage staker = checkDeposit[msg.sender][_depositId];
        uint256 depositAmount = staker.depositAmount;
        uint256 lockedUntil = staker.startTime + staker.daysLocked;
        uint256 _amount = depositAmount;

        // Update staker balance for corresponding deposit and withdraw
        if ((depositAmount > 1) && (block.timestamp >= lockedUntil)) {
            claim(_depositId, msg.sender);
            currentId[msg.sender]++;
            balanceTotal[msg.sender] -= _amount;
            totalStaked -= _amount;
            staker.depositAmount = 0;
            emit UnStake(msg.sender, _amount);
            bool success = audxContract.transfer(msg.sender, _amount);
            require(success, "Failed to withdraw!");
        }
    }

    // Iterate through all user's deposits to withdraw all funds
    function withdrawAll() public virtual {
        // Create an array for all msg.senders deposits
        // uint256[] memory depositIds = allUsersDeposits[msg.sender].values();
        // require(depositIds.length > 0, "No Withdrawals Avaialable");
        uint256 _currentId = currentId[msg.sender];
        StakeVault storage staker = checkDeposit[msg.sender][_currentId];
        uint256 secondsLocked = staker.daysLocked; // * 86400; FOR TESTING
        uint256 lockedUntil = staker.startTime + secondsLocked;
        require(
            (staker.depositAmount > 1) && (block.timestamp >= lockedUntil),
            "No Withdrawals Available!"
        );
        uint256 i = _currentId;
        uint256 limit = nextId[msg.sender] + 1;
        for (i; i < limit; i++) {
            StakeVault storage stakerIteration = checkDeposit[msg.sender][i];
            uint256 lockedUntilIteration = stakerIteration.startTime +
                stakerIteration.daysLocked;
            if (
                (stakerIteration.depositAmount > 1) &&
                (block.timestamp >= lockedUntilIteration)
            ) {
                withdrawPosition(i);
            }
        }
    }

    // Claim for one user deposit
    function viewRewards(
        address _user
    ) public view returns (uint256 rewardAUDX, uint256 rewardRToken) {
        // Bring out users deposit details
        // Reward logic but will have to address decimals problem in ERC20 contracts
        // If enter stake of 31,536,000 will get APY in years in seconds
        uint256 rewardTotal;
        uint256 i = currentId[_user];
        uint256 limit = nextId[_user] + 1;
        for (i; i < limit; i++) {
            StakeVault storage staker = checkDeposit[_user][i];
            uint256 depositAmount = staker.depositAmount;
            uint256 aprPerSecond = (staker.lockedAPY * avoidFloat) / 365; // / 86400;
            uint256 reward = (aprPerSecond *
                (block.timestamp - staker.startTime) *
                depositAmount) /
                (avoidFloat * 100) -
                staker.rewardClaimed;
            rewardTotal += reward;
        }

        if (rewardTotal == 0) {
            revert("No rewards available!");
        }
        rewardAUDX = rewardTotal;
        rewardRToken = rewardTotal;
    }

    // Claim for one user deposit
    function claim(uint256 _depositId, address _user) public ifNotPaused {
        // Bring out users deposit details
        StakeVault storage staker = checkDeposit[_user][_depositId];
        uint256 depositAmount = staker.depositAmount;

        // Require statements
        if (depositAmount == 0) {
            revert("You dont have any funds Staked!");
        }

        // Reward logic but will have to address float problem
        uint256 aprPerSecond = (staker.lockedAPY * avoidFloat) / 365 / 86400;
        uint256 reward = (aprPerSecond *
            (block.timestamp - staker.startTime) *
            depositAmount) /
            (avoidFloat * 100) -
            staker.rewardClaimed;

        if (reward >= 1) {
            // revert("No rewards available!");
            rewardContract.mint(msg.sender, reward);
            staker.rewardClaimed += reward;
            audxContract.mint(msg.sender, reward);
            emit Claim(msg.sender, reward);
        }
    }

    // Iterate through all user's deposits to claim all rewards
    function claimAll(address _user) public virtual {
        // Create an array for all msg.senders deposits
        // uint256[] memory depositIds = allUsersDeposits[_user].values();

        uint256 _currentId = currentId[msg.sender];
        // StakeVault storage staker = checkDeposit[msg.sender][_currentId];
        uint256 i = _currentId;
        uint256 limit = nextId[msg.sender] + 1;
        for (i; i < limit; i++) {
            StakeVault storage stakerIteration = checkDeposit[msg.sender][i];
            uint256 aprPerSecond = (stakerIteration.lockedAPY * avoidFloat) /
                365 /
                86400;
            uint256 reward = (aprPerSecond *
                (block.timestamp - stakerIteration.startTime) *
                stakerIteration.depositAmount) /
                (avoidFloat * 100) -
                stakerIteration.rewardClaimed;
            if (reward > 1) {
                claim(_currentId, _user);
            }
        }
    }

    // Emergency, pause
    function pause() public onlyAuthorized {
        isPaused = true;
    }

    // Unpause
    function unpause() public onlyAuthorized {
        isPaused = false;
    }
}