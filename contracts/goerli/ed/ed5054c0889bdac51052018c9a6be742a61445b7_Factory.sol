pragma solidity ^0.8.8;

import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";

import "../interfaces/factory/IFactory.sol";
import "../tunnel/FxBaseRootTunnel.sol";
import {FactoryData} from "../type/Tunnel.sol";
import {Errors} from "../lib/helpers/Error.sol";

contract Factory is
    Initializable,
    IFactory,
    FxBaseRootTunnel,
    AccessControlUpgradeable
{
    bytes32 public constant GOVERNOR_ROLE = keccak256("GOVERNOR_ROLE");

    uint256 private _length;

    mapping(bytes32 => FactoryData) private protocol;

    modifier onlyGovernor() {
        require(
            hasRole(GOVERNOR_ROLE, _msgSender()),
            Errors.AC_INVALID_GOVERNOR
        );
        _;
    }

    function initialize(
        address _checkpointManager,
        address _fxRoot,
        address admin
    ) public initializer {
        FxBaseRootTunnel.setInitialParams(_checkpointManager, _fxRoot);
        _setupRole(DEFAULT_ADMIN_ROLE, admin);
    }

    function addProtocol(
        address protocolAddressL1,
        address protocolAddressL2,
        address tokenAddressL1,
        address tokenAddressL2,
        address stablecoinL1,
        address stablecoinL2,
        bytes32 protocolName
    ) public virtual override onlyGovernor returns (bool) {
        FactoryData memory tunneldata = FactoryData(
            protocolName,
            tokenAddressL1,
            tokenAddressL2,
            protocolAddressL1,
            protocolAddressL2,
            stablecoinL1,
            stablecoinL2
        );

        protocol[protocolName] = tunneldata;

        _length += 1;
        _sendMessageToChild(abi.encode(tunneldata));
        emit ProtocolAdded(
            protocolName,
            protocolAddressL1,
            protocolAddressL2,
            tokenAddressL1,
            tokenAddressL2,
            stablecoinL1,
            stablecoinL2
        );
        return true;
    }

    function removeProtocol(bytes32 protocolName)
        public
        virtual
        override
        onlyGovernor
        returns (bool)
    {
        FactoryData memory tunneldata = FactoryData(
            protocolName,
            address(0),
            address(0),
            address(0),
            address(0),
            address(0),
            address(0)
        );

        protocol[protocolName] = tunneldata;

        _length -= 1;
        _sendMessageToChild(abi.encode(tunneldata));
        emit ProtocolDeleted(protocolName);

        return true;
    }

    function allProtocolsLength()
        public
        view
        virtual
        override
        returns (uint256)
    {
        return _length;
    }

    function fetchProtocolInfo(bytes32 protocolName)
        public
        view
        virtual
        override
        returns (FactoryData memory)
    {
        return protocol[protocolName];
    }

    /// @dev abstract function
    function _processMessageFromChild(bytes memory message)
        internal
        virtual
        override
    {}
}

