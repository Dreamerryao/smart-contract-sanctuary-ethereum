  function _calcTotalTokenFee(
    PaymasterMode mode,
    uint256 rate,
    uint256 cost,
    uint256 fee
  ) internal pure returns (uint256) {
    if (mode == PaymasterMode.FREE) return 0;
    if (mode == PaymasterMode.FEE_ONLY) return fee;
    if (mode == PaymasterMode.GAS_ONLY) return (cost * rate) / 1e18;
