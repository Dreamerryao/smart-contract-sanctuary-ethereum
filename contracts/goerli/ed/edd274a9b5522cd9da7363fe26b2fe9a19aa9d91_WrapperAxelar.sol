contract WrapperAxelar {
    using StringToAddress for string;
    using AddressToString for address;

    IAxelarGateway public immutable gateway;
    IAxelarGasService public immutable gasReceiver;
    // EFI Ethereum address
    IERC20 public immutable efi;

    constructor(address gateway_, address gasReceiver_, address efiAddress_) {
        gateway = IAxelarGateway(gateway_);
        gasReceiver = IAxelarGasService(gasReceiver_);
        efi = IERC20(efiAddress_);
    }

    /**
    * @dev Transfer EFI to Moonbeam
    * @param moonbeamEfi Executable and ERC20 EFI address on Moonbeam
    * @param amount The amount of EFI tokens to mint
    * Only bridge contract that implements `AxelarExecutable` can call this function
    */
    function transferRemote(
        address moonbeamEfi,
        uint256 amount
    ) external payable {
        // burn EFI tokens before executing the contract call
        // or maybe lock (?)
        efi.transferFrom(msg.sender, address(this), amount);

        bytes memory payload = abi.encode(msg.sender, amount);

        string memory stringMoonbeamEfi = moonbeamEfi.toString();

        if (msg.value > 0) {
            gasReceiver.payNativeGasForContractCall{ value: msg.value }(
                address(this),
                'Moonbeam',
                stringMoonbeamEfi,
                payload,
                msg.sender
            );
        }

        gateway.callContract('Moonbeam', stringMoonbeamEfi, payload);
    }
}