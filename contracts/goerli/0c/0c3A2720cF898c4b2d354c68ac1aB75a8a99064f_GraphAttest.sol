pragma solidity ^0.8.15;

import '@openzeppelin/contracts/token/ERC20/IERC20.sol';
import '@uma/core/contracts/common/implementation/Testable.sol';
import '@uma/core/contracts/optimistic-oracle-v2/interfaces/OptimisticOracleV2Interface.sol';
import '@uma/core/contracts/data-verification-mechanism/implementation/Constants.sol';
import '@eth-optimism/contracts-periphery/contracts/universal/op-nft/AttestationStation.sol';

contract GraphAttest is Testable {
    struct GraphSource {
        string endpoint; // thegraph endpoint
        string query; // Use this query to check whether an address is eligible for the attestation or not
        string expression; // JavaScript code that transforms the above query result into a binary output (0 or 1), where 0 represents a non-eligible address and 1 indicates an address eligible for attestation.
    }

    struct Attestor {
        bytes32 attestorKey; // A attestorKey used to namespace the attestation.
        string name; // Attestor name.
        string description; // Attestor description.
        GraphSource graphSource;
    }

    struct AttestRequest {
        bytes32 attestorKey;
        address about;
        uint256 timestamp;
    }

    // Maps hash of attestorKey to attestor.
    mapping(bytes32 => Attestor) public attestors;

    // Maps hash of requestId to AttestRequest struct.
    mapping(bytes32 => AttestRequest) public requests;

    // Unique identifier for price feed ticker.
    bytes32 public constant priceIdentifier = 'YES_OR_NO_QUERY';
    int256 public constant yesPrice = 1e18;

    // Finder for UMA contracts.
    FinderInterface finder;

    // The collateral currency used to back the positions in this contract.
    IERC20 public collateralCurrency;

    // Optimistic Oracle contract.
    OptimisticOracleV2Interface public immutable oracle;

    // Attestation Station contract.
    AttestationStation public attestationStation;

    event AttestorRegistered(bytes32 attestorKey, string name, string description);
    event AttestRequested(bytes32 attestorKey, address about, uint256 timestamp, bytes ancillaryData);
    event AttestRequestSettled(address about, bytes32 key, bytes val, uint256 timestamp, bytes ancillaryData);

    modifier onlyOracle() {
        require(
            msg.sender == address(oracle),
            'Caller must be Optimistic Oracle'
        );
        _;
    }

    constructor(
        address _collateralAddress,
        address _finderAddress,
        address _attestationStationAddress,
        address _timerAddress
    ) Testable(_timerAddress) {
        collateralCurrency = IERC20(_collateralAddress);
        finder = FinderInterface(_finderAddress);
        oracle = OptimisticOracleV2Interface(
            finder.getImplementationAddress(OracleInterfaces.OptimisticOracleV2)
        );
        attestationStation = AttestationStation(_attestationStationAddress);
    }

    function registerAttestor(Attestor memory attestor) external {
        _validateAttestor(attestor);

        _registerAttestor(attestor);
    }

    function requestAttest(bytes32 attestorKey, address about) external {
        Attestor memory attestor = _getAttestor(attestorKey);
        require(
            attestor.attestorKey != bytes32(0),
            'Attestor with this attestorKey does not exist'
        );

        uint256 timestamp = getCurrentTime();
        bytes memory ancillaryData = _buildAncillaryData(
            about,
            timestamp,
            attestor
        );

        bytes32 requestId = _getRequestId(timestamp, ancillaryData);
        requests[requestId] = AttestRequest({
            attestorKey: attestorKey,
            about: about,
            timestamp: timestamp
        });

        oracle.requestPrice(
            priceIdentifier,
            timestamp,
            ancillaryData,
            collateralCurrency,
            0
        );

        emit AttestRequested(attestorKey, about, timestamp, ancillaryData);
    }

    function getRequestAndAttestor(uint256 timestamp, bytes memory ancillaryData) external view returns (AttestRequest memory, Attestor memory) {
        AttestRequest memory request = _getRequest(timestamp, ancillaryData);
        require(request.attestorKey != bytes32(0), 'Request must be exist');

        Attestor memory attestor = _getAttestor(request.attestorKey);
        require(attestor.attestorKey != bytes32(0), 'Attestor must be exist');

        return (request, attestor);
    }

    function priceSettled(
        bytes32 identifier,
        uint256 timestamp,
        bytes memory ancillaryData,
        int256 price
    ) external onlyOracle {
        require(identifier == priceIdentifier, 'same identifier');

        AttestRequest memory request = _getRequest(timestamp, ancillaryData);
        require(request.attestorKey != bytes32(0), 'request must be exist');

        Attestor memory attestor = _getAttestor(request.attestorKey);
        require(attestor.attestorKey != bytes32(0), 'attestor must be exist');

        // If the price is settled as YES, create a new attestation.
        // Otherwise, delete the attestation.
        bytes memory val = price == yesPrice
            ? _uint256ToBytes(timestamp)
            : new bytes(0);
        _attest(request.about, attestor.attestorKey, val);

        emit AttestRequestSettled(
            request.about,
            request.attestorKey,
            val,
            timestamp,
            ancillaryData
        );
    }

    function _validateAttestor(Attestor memory attestor) private view {
        require(
            _getAttestor(attestor.attestorKey).attestorKey == bytes32(0),
            'Attestor with this attestorKey already exists'
        );

        require(attestor.attestorKey != bytes32(0), 'Key must not be empty');
        require(bytes(attestor.name).length > 0, 'Name must not be empty');
        require(
            bytes(attestor.description).length > 0,
            'Description must not be empty'
        );
        require(
            bytes(attestor.graphSource.endpoint).length > 0,
            'Endpoint of GraphSource must not be empty'
        );
        require(
            bytes(attestor.graphSource.query).length > 0,
            'Query of GraphSource must not be empty'
        );
        require(
            bytes(attestor.graphSource.expression).length > 0,
            'Expression of GraphSource must not be empty'
        );
    }

    function _registerAttestor(Attestor memory attestor) private {
        attestors[attestor.attestorKey] = attestor;

        emit AttestorRegistered(attestor.attestorKey, attestor.name, attestor.description);
    }

    function _getAttestor(bytes32 attestorKey) private view returns (Attestor memory) {
        return attestors[attestorKey];
    }

    function _buildAncillaryData(
        address about,
        uint256 timestamp,
        Attestor memory attestor
    ) private pure returns (bytes memory) {
        // TODO: make the data human readable.
        return abi.encodePacked(about, timestamp, attestor.attestorKey);
    }

    function _getRequestId(
        uint256 timestamp,
        bytes memory ancillaryData
    ) private view returns (bytes32) {
        return
            keccak256(
                abi.encodePacked(
                    address(this),
                    priceIdentifier,
                    timestamp,
                    ancillaryData
                )
            );
    }

    function _getRequest(uint256 timestamp, bytes memory ancillaryData) private view returns (AttestRequest memory) {
        bytes32 requestId = _getRequestId(timestamp, ancillaryData);

        return requests[requestId];
    }

    function _attest(address about, bytes32 key, bytes memory val) private {
        attestationStation.attest(about, key, val);
    }

    function _uint256ToBytes(
        uint256 value
    ) private pure returns (bytes memory) {
        return abi.encodePacked(value);
    }
}

