pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "../../../Platform/MetaUnit/ERC20/IMetaUnit.sol";
import {ReentrancyGuard} from "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import {ERC20Burnable, ERC20} from "@openzeppelin/contracts/token/ERC20/extensions/ERC20Burnable.sol";

contract Lexor is ERC20Burnable, ReentrancyGuard {
    enum VotingType { minimal_amount, maximal_amount, percentage }

    struct Activated { uint256 uid; address owner_of; uint256 token_id; uint256 metaunit_amount; uint256 percentage; bool activated; }
    struct Staking { uint256 uid; uint256 metaunit_staking_amount; uint256 start_time; uint256 reward; address owner_of; bool finished; }
    struct Proposal { VotingType voting_type; uint256 amount; uint256 start_time; bool resolved; }
    struct Voice { address eth_address; bool voice; }


    Staking[] private _stakings;
    Activated[] private _activated;
    Proposal[] private _proposals;
    uint256 private _percentage = 10;
    uint256 private _min_amount = 1000000 ether;
    uint256 private _max_amount = 5000000 ether;
    mapping(address => uint256) private _activated_addresses;
    mapping(uint256 => mapping(address => bool)) private _is_voted;
    mapping(uint256 => Voice[]) private _voices;
    address private _meta_unit_address;
    address private _promotion_crystal_address;
    address private _project_address;

    constructor(address meta_unit_address_, address promotion_crystal_address_, address project_address_) ERC20("Light Elixir", "LEXOR") {
        _meta_unit_address = meta_unit_address_;
        _promotion_crystal_address = promotion_crystal_address_;
        _project_address = project_address_;
    }

    event proposalCreated(uint256 uid, VotingType voting_type, uint256 amount, uint256 start_time, uint256 end_time);
    event voiceSubmited(address eth_address, bool voice);
    event proposalResolved(uint256 uid, bool submited);
    event crystalActivated(uint256 uid, address owner_of, uint256 token_id, uint256 amount, uint256 percentage);
    event creystalDeactivated(uint256 uid);
    event stakingCreated(uint256 uid, uint256 metaunit_staking_amount, uint256 start_time, address owner_of, bool finished);
    event claimed(uint256 uid, uint256 claimed);

    function createPropsal(VotingType voting_type_, uint256 amount_) public {
        if (voting_type_ == VotingType.percentage) require(amount_ <= 100, "Percent should be lower then 100");
        uint256 newProposalUid = _proposals.length;
        _proposals.push(Proposal(voting_type_, amount_, block.timestamp, false));
        emit proposalCreated(newProposalUid, voting_type_, amount_, block.timestamp, block.timestamp + 5 days);
    }

    function vote(uint256 uid_, bool voice_) public nonReentrant {
        require(!_is_voted[uid_][msg.sender], "You vote has been submited already");
        Proposal memory proposal = _proposals[uid_];
        require(block.timestamp < proposal.start_time + 5 days, "Governance finished");
        require(balanceOf(msg.sender) > 0, "Not enough metaunits for voting");
        _voices[uid_].push(Voice(msg.sender, voice_));
        emit voiceSubmited(msg.sender, voice_);
        _is_voted[uid_][msg.sender] = true;
    }

    function resolve(uint256 uid_) public nonReentrant {
        Proposal memory proposal = _proposals[uid_];
        require(!_proposals[uid_].resolved, "Already resolved");
        require(block.timestamp > proposal.start_time + 5 days, "Governance not finished");
        uint256 voices_for = 0;
        uint256 voices_against = 0;
        for (uint256 i = 0; i < _voices[uid_].length; i++) {
            Voice memory voice = _voices[uid_][i];
            uint256 balance = balanceOf(voice.eth_address);
            if (voice.voice) voices_for += balance;
            else voices_against += balance;
        }
        bool submited = voices_for > voices_against;
        if (submited) {
            if (proposal.voting_type == VotingType.maximal_amount) _max_amount = proposal.amount;
            else if (proposal.voting_type == VotingType.minimal_amount) _min_amount = proposal.amount;
            else if (proposal.voting_type == VotingType.percentage) _percentage = proposal.amount;
        }
        emit proposalResolved(uid_, submited);
        _proposals[uid_].resolved = true;
    }

    function activateCrystal(uint256 token_id, uint256 percentage, uint256 amount) public nonReentrant {
        require(amount >= _min_amount, "Min. value to stake of metaunit more than entire");
        require(amount <= _max_amount, "Max. value to stake of metaunit less than entire");
        require(percentage <= _percentage, "Percentage should be less");
        IERC721 promotion = IERC721(_promotion_crystal_address);
        IERC20 metaunit = IERC20(_meta_unit_address);
        require(promotion.ownerOf(token_id) == msg.sender, "You are not an owner");
        require(metaunit.balanceOf(msg.sender) >= amount, "Not enough tokens in your wallet");
        promotion.transferFrom(msg.sender, address(this), token_id);
        metaunit.transferFrom(msg.sender, address(this), amount);
        uint256 newActivatedUid = _activated.length;
        _activated.push(Activated(newActivatedUid, msg.sender, token_id, amount, percentage, true));
        emit crystalActivated(newActivatedUid, msg.sender, token_id, amount, percentage);
    }

    function deactivateCrystal(uint256 uid) public nonReentrant {
        require(uid <= _activated.length, "Not exists");
        Activated memory activated = _activated[uid];
        require(activated.activated, "Already deactivated");
        require(msg.sender == activated.owner_of, "You are not an owner");
        IERC721(_promotion_crystal_address).transferFrom(address(this), msg.sender, activated.token_id);
        IERC20(_meta_unit_address).transfer(msg.sender, activated.metaunit_amount);
        _activated[uid].activated = false;
        emit creystalDeactivated(uid);
    }

    function getActivatedList() public view returns (Activated[] memory) {
        uint256 activated_len = IERC721(_promotion_crystal_address).balanceOf(address(this));
        Activated[] memory activated = new Activated[](activated_len);
        for (uint256 i = 0; i < activated_len; i++) {
            if (_activated[i].activated) {
                activated[_activated.length] = _activated[i];
            }
        }
        return activated;
    }

    function getAvaragePercent() public view returns (uint256) {
        uint256 count = 0;
        uint256 total = 0;
        for (uint256 i = 0; i < _activated.length; i++) {
            if (_activated[i].activated) {
                total += _activated[i].percentage;
                count += 1;
            }
        }
        return total / count;
    }

    function stake(uint256 amount) public nonReentrant {
        require(amount >= 1000 ether, "Not enough MetaUnit for staking. Min: 1000 MEU.");
        require(IERC721(_promotion_crystal_address).balanceOf(address(this)) > 0, "Amount of activated Promotion crystals should be greater than 1");
        IMetaUnit(_meta_unit_address).burnFrom(msg.sender, amount);
        uint256 newStakingId = _stakings.length;
        _stakings.push(Staking(newStakingId, amount, block.timestamp, (amount * 6) / 10, msg.sender, false));
        emit stakingCreated(newStakingId, amount, block.timestamp, msg.sender, false);
    }

    function claim(uint256 uid) public nonReentrant {
        require(uid <= _stakings.length, "Staking does not exist");
        Staking memory staking = _stakings[uid];
        require(staking.owner_of == msg.sender, "Not your staking");
        require(staking.start_time + 30 days < block.timestamp, "Staking didn't finish");
        require(!staking.finished, "Staking is resolved.");
        uint256 amount = staking.reward - ((staking.reward * (100 - getAvaragePercent())) / 100);
        _mint(msg.sender, amount);
        _stakings[uid].finished = true;
        uint256 total = 0;
        Activated[] memory activated = getActivatedList();
        for (uint256 i = 0; i < activated.length; i++) {
            uint256 value = activated[i].metaunit_amount / 5000000 ether;
            total += value;
        }
        for (uint256 i = 0; i < activated.length; i++) {
            uint256 coef = activated[i].metaunit_amount / 5000000 ether;
            _activated_addresses[activated[i].owner_of] += staking.reward * getAvaragePercent() * (coef / total);
        }
        emit claimed(uid, amount);
    }

    function claimActivated() public {
        require(_activated_addresses[msg.sender] > 0, "You had nothing to claim");
        _mint(msg.sender, _activated_addresses[msg.sender]);
        _activated_addresses[msg.sender] = 0;
    }

    function mint(uint256 quantity) public {
        require(msg.sender == _project_address, "Permission denied");
        _mint(msg.sender, quantity);
    }
}

