import "@openzeppelin/contracts/utils/introspection/ERC165.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721Receiver.sol";

import "./IBond.sol";

contract PiggyBank is ERC165, IERC721Receiver, IBond {
    struct Treasury {
        address beneficiary;
        uint128 capacity;
        uint128 amount;
    }

    IERC721 private _minter;
    IERC20Metadata private _currency;

    // Mapping from token ID to treasury
    mapping(uint256 => Treasury) private _treasuries;

    constructor(IERC721 minter, IERC20Metadata erc20) {
        _minter = minter;
        _currency = erc20;
    }

    modifier onlyMinter() {
        require(msg.sender == address(_minter), "Caller is not the minter");
        _;
    }

    function supportsInterface(bytes4 interfaceId) public view override(ERC165, IERC165) returns (bool) {
        return interfaceId == type(IBond).interfaceId || super.supportsInterface(interfaceId);
    }

    function onERC721Received(
        address, // operator
        address from,
        uint256 tokenId,
        bytes calldata data
    ) external override onlyMinter returns (bytes4) {
        require(address(0) == from && data.length == 28, "Invalid piggy bank data");

        bytes8 capacity = bytes8(data);
        bytes20 beneficiary = bytes20(data[8:]);

        Treasury storage treasury = _treasuries[tokenId];

        treasury.beneficiary = address(beneficiary);
        treasury.capacity = uint128(uint64(capacity)) * uint128(10)**_currency.decimals();
        treasury.amount = 0;

        return IERC721Receiver.onERC721Received.selector;
    }

    function currency() external view override returns (IERC20Metadata) {
        return _currency;
    }

    function afterDeposit(uint256 tokenId, uint256 amount) external override onlyMinter returns (uint256 change) {
        Treasury storage treasury = _treasuries[tokenId];

        require(treasury.capacity > 0, "Piggy bank has already broken");
        require(treasury.amount < treasury.capacity, "Piggy bank is full");

        amount += treasury.amount;

        if (amount > treasury.capacity) {
            change = amount - treasury.capacity;
            treasury.amount = treasury.capacity;
        } else {
            treasury.amount = uint128(amount);
        }

        if (treasury.amount == treasury.capacity) {
            IERC721(_minter).safeTransferFrom(address(this), treasury.beneficiary, tokenId);
        }

        return change;
    }

    function beforeCollect(uint256 tokenId, uint256 amount) external override onlyMinter returns (uint256) {
        Treasury storage treasury = _treasuries[tokenId];

        require(treasury.amount > 0, "Piggy bank is empty");

        if (treasury.capacity > 0) {
            treasury.capacity = 0;
        }

        return amount / 1000;
    }

    function treasuryOf(uint256 tokenId) external view returns (Treasury memory) {
        return _treasuries[tokenId];
    }

    function capacityOf(uint256 tokenId) external view returns (uint128) {
        return _treasuries[tokenId].capacity;
    }

    function amountOf(uint256 tokenId) external view returns (uint128) {
        return _treasuries[tokenId].amount;
    }

    function beneficiaryOf(uint256 tokenId) external view returns (address) {
        return _treasuries[tokenId].beneficiary;
    }
}

