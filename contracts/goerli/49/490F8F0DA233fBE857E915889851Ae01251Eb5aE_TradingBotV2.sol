    // -- CONSTANTS --
    uint24 public constant feeTier = 3000;
    uint8 public constant swapSlippage = 10; // 10%

    // -- VARIABLES --
    Counters.Counter private _botIdCounter; // Counter ID

    mapping(uint256 => BotObj) public botIdToBotObj;
