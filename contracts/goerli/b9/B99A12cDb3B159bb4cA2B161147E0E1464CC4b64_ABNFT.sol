  // /___/_/ /_/\__/\___/_/  /_/ /_/\__,_/_/  /_/    \__,_/_/ /_/\___/\__/_/\____/_/ /_/____/

  /**
   * @notice
   *  Returns the base URI
   *
   * @return baseTokenURI base token URI state
   */
  function _baseURI() internal view virtual override returns (string memory) {
    return baseTokenURI;
  }
