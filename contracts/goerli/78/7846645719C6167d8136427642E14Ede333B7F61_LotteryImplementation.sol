pragma solidity ^0.8.17;

import { EnumerableMap } from "@openzeppelin/contracts/utils/structs/EnumerableMap.sol";

enum LotteryState { OPEN, CLOSED }

library LotteryStorage {
  using EnumerableMap for EnumerableMap.AddressToUintMap;
  struct Layout {
    address USDT;
    uint lotteryId;
    //lotteryId => LotteryState
    mapping(uint => LotteryState) lotteryState;
    //lotteryId => bet
    mapping(uint => EnumerableMap.AddressToUintMap) bet;
    //lotteryId => organizer
    mapping(uint => address) organizer;
    //lotteryId => address[]
    mapping(uint => address[]) players;
    //lotteryId => uint256
    mapping(uint => uint256) totalBets;
  }

  bytes32 internal constant STORAGE_SLOT = keccak256("Lottery.storage.1.0.0");

  function layout() internal pure returns (Layout storage l) {
    bytes32 slot = STORAGE_SLOT;
    assembly {
      l.slot := slot
    }
  }

  function placeBet(uint lotteryId, address player, uint256 amount) internal {
    layout().bet[lotteryId].set(player, amount);
  }

  function betOf(uint lotteryId, address player) internal view returns(bool exists, uint256 amount) {
    (exists, amount) = layout().bet[lotteryId].tryGet(player);
  }

  function removeBet(uint lotteryId, address player) internal {
    layout().bet[lotteryId].remove(player);
  }

  function numberOfPlayers(uint lotteryId) internal view returns(uint256) {
    return layout().bet[lotteryId].length();
  }

  function getPairByIndex(uint lotteryId, uint256 index) internal view returns(address, uint256) {
    return layout().bet[lotteryId].at(index);
  }
}