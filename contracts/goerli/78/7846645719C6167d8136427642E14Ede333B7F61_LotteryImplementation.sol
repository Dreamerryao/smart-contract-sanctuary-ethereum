pragma solidity ^0.8.17;

import { LotteryStorage, LotteryState } from "./LotteryStorage.sol";
import { LotteryModifiers } from "./LotteryModifiers.sol";
import { ILottery } from "./ILottery.sol";
import { IERC20 } from "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import { IERC721 } from "@openzeppelin/contracts/token/ERC721/IERC721.sol";

contract LotteryImplementation is ILottery, LotteryModifiers {
  function createLottery() public {
    uint lotteryId = LotteryStorage.layout().lotteryId;
    LotteryStorage.layout().lotteryId++;
    LotteryStorage.layout().lotteryState[lotteryId] = LotteryState.OPEN;
    LotteryStorage.layout().organizer[lotteryId] = msg.sender;
    emit LotteryCreated(lotteryId, msg.sender);
  }

  function placeBet(uint lotteryId, uint256 amount) 
    public 
    ifIsLotteryOpen(lotteryId) 
  {
    (bool exists, uint256 bet) = LotteryStorage.betOf(lotteryId, msg.sender);
    exists
      ? LotteryStorage.placeBet(lotteryId, msg.sender, bet + amount)
      : LotteryStorage.placeBet(lotteryId, msg.sender, amount);
    LotteryStorage.layout().totalBets[lotteryId] += amount;
    USDT().transferFrom(msg.sender, address(this), amount);
    emit BetPlaced(lotteryId, msg.sender, amount);
  }

  function withdrawBet(uint lotteryId, uint256 amount)
    public
    ifIsLotteryOpen(lotteryId)
  {
    (bool exists, uint256 bet) = LotteryStorage.betOf(lotteryId, msg.sender);
    if (!exists) { revert NoBet(lotteryId, msg.sender); }
    if (amount > bet) { revert WithdrawalExeedsBet(lotteryId, msg.sender, bet, amount); }
    if (amount == bet) { LotteryStorage.removeBet(lotteryId, msg.sender); }
    if (amount < bet) { LotteryStorage.placeBet(lotteryId, msg.sender, bet - amount); }
    LotteryStorage.layout().totalBets[lotteryId] -= amount;
    USDT().transfer(msg.sender, amount);
    emit BetWithdrawn(lotteryId, msg.sender, amount);
  }

  function finishLottery(uint lotteryId)
    public 
    ifIsLotteryOpen(lotteryId)
    ifIsLotteryOrganizer(lotteryId) 
  {
    LotteryStorage.layout().lotteryState[lotteryId] = LotteryState.CLOSED;
    uint256 randomness = uint256(blockhash(block.number));
    uint256 index = randomness % LotteryStorage.numberOfPlayers(lotteryId);
    (address winner,) = LotteryStorage.getPairByIndex(lotteryId, index);
    assignRewards(lotteryId, winner);
    emit LotteryFinished(lotteryId, msg.sender, winner);
  }

  function assignRewards(uint lotteryId, address winner) private {
    USDT().transfer(winner, LotteryStorage.layout().totalBets[lotteryId]);
  }

  function USDT() internal view returns(IERC20) {
    return IERC20(LotteryStorage.layout().USDT);
  }

  function betOf(uint lotteryId, address player) external view returns(uint256 amount) {
    (, amount) = LotteryStorage.betOf(lotteryId, player);
  }
}

