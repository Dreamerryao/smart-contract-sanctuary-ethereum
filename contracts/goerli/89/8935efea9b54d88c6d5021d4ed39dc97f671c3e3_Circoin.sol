pragma solidity ^0.8.13;

import "solmate/tokens/ERC20.sol";
import "solmate/auth/Owned.sol";
import "openzeppelin-contracts/utils/cryptography/MerkleProof.sol";

contract Circoin is ERC20, Owned {
    bytes32 constant claimRoot =
        0x6449c384b83d0722c046645779f7ea49a38fc35b2e0af747bbb9b3b57874150c;
    uint256 constant COINS_PER_TOKEN = 5000;

    mapping(address => bool) addressClaimed;

    constructor() ERC20("Circoin", "CIRC", 18) Owned(msg.sender) {}

    function claimCoins(uint256 ownedTokens, bytes32[] calldata proof)
        external
    {
        bytes32 node = keccak256(abi.encodePacked(msg.sender, ownedTokens));
        require(MerkleProof.verify(proof, claimRoot, node), "INVALID_PROOF");
        require(!addressClaimed[msg.sender], "ADDRESS_CLAIMED");

        addressClaimed[msg.sender] = true;
        uint256 coinAmount = ownedTokens * COINS_PER_TOKEN * 1 ether;
        _mint(msg.sender, coinAmount);
    }

    function _devMint(address _address, uint256 _amount) external {
        _mint(_address, _amount);
    }
}

