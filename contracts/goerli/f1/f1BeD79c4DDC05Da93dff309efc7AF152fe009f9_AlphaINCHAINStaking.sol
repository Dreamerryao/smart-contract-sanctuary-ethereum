contract AlphaINCHAINStaking is Ownable {
    using ECDSA for bytes32;

    address public nftAddress = 0xcb33224909Af943dc753dEfbd5328A3b4d2cA2D4;
    address public reward_aggregator;
    address public tokenAddress = 0xe6847E65f088FB7421BcC3a483f822f6F0698e35;

    address private withdrawAddress = 0xb653F21Fc0Bba5d43658e5968982279Efb6Ed00A;

    uint blockTimestamp;
    uint public currentRound = 0;

    uint public normalRewardFactor = 29;
    uint public rareRewardFactor = 27;
    uint public epicRewardFactor = 24;
    uint public legendaryRewardFactor = 20;

    uint public numNfts = 10000;

    mapping(uint => mapping(uint => RoundNftInfo)) public tokenRoundStats;
    mapping(uint => StakingRound) public stakingRounds;
    mapping(uint => StakingRoundRewards) public stakingRoundsTokens;
    mapping(uint => StakingRoundRewards) public stakingRoundsEth;
    mapping(uint => StakingRoundRewards) public stakingRoundsTypes;

    mapping(uint => uint[]) public nftsIdsPaid;

    uint8[] tokens_type;

    struct StakingRoundRewards {
        uint normal;
        uint rare;
        uint epic;
        uint legendary;
    }


    struct StakingRound {
        uint tokens;
        uint eth;
        uint nfts;
        address reward_token_address;
    }

    struct RoundNftInfo {
        uint lastUpdateTimestamp;
        bool paid;
    }

    constructor()
    {
        blockTimestamp = block.timestamp;
    }

    //SIGNATURE VERIFICATION

    /*@dev helper function for WL sale
        returns true if reference address and signature match
        false otherwise
        Read more about ECDSA @openzeppelin https://docs.openzeppelin.com/contracts/2.x/utilities
    */
    function verifyAddressSigner(
        address referenceAddress,
        bytes32 messageHash,
        bytes memory signature
    ) internal pure returns (bool) {
        return referenceAddress == messageHash.toEthSignedMessageHash().recover(signature);
    }


    // @dev, helper hash function for WL Mint
    function hashMessage(uint roundNumber, uint normal, uint rare, uint epic, uint legendary, uint _blockTimestamp, address sender) private pure returns (bytes32)
    {
        return keccak256(abi.encodePacked(roundNumber, normal, rare, epic, legendary, _blockTimestamp, sender));
    }

    //END SIGNATURE VERIFICATION

    // TODO cambiar par√°metros
    event REWARD_CLAIMED_NFT(uint indexed stakingRound, address indexed staker, uint timestamp, uint token_id);
    event REWARD_CLAIMED(uint indexed stakingRound, address indexed staker, uint timestamp, uint reward_eth, uint reward_tokens);

    //    function setTokenTypes(address _nft_address) public onlyOwner
    //    {
    //
    //
    //    }


    function setNftAddress(address _nft_address) public onlyOwner
    {
        nftAddress = _nft_address;
    }

    function setTokenAddress(address _token_address) public onlyOwner
    {
        tokenAddress = _token_address;
    }

    function setRewardAggregator(address _reward_aggregator) public onlyOwner
    {
        reward_aggregator = _reward_aggregator;
    }

    function setNewStakingRound(uint valueTokenWithDecimals, uint nftsNormal, uint nftsRare, uint nftsEpic, uint nftsLegendary, address _token_address) external payable onlyOwner {
        //Prevents Underflow
        currentRound++;


        stakingRoundsTypes[currentRound].normal = nftsNormal;
        stakingRoundsTypes[currentRound].rare = nftsRare;
        stakingRoundsTypes[currentRound].epic = nftsEpic;
        stakingRoundsTypes[currentRound].legendary = nftsLegendary;

        stakingRounds[currentRound].tokens = valueTokenWithDecimals;
        stakingRounds[currentRound].eth = msg.value;
        stakingRounds[currentRound].nfts = nftsNormal + nftsRare + nftsEpic + nftsLegendary;
        tokenAddress = _token_address;
        stakingRounds[currentRound].reward_token_address = tokenAddress;

        stakingRoundsTokens[currentRound].normal = ((valueTokenWithDecimals * normalRewardFactor) / 100) / nftsNormal;
        stakingRoundsTokens[currentRound].rare = ((valueTokenWithDecimals * rareRewardFactor) / 100) / nftsRare;
        stakingRoundsTokens[currentRound].epic = ((valueTokenWithDecimals * epicRewardFactor) / 100) / nftsEpic;
        stakingRoundsTokens[currentRound].legendary = ((valueTokenWithDecimals * legendaryRewardFactor) / 100) / nftsLegendary;

        stakingRoundsEth[currentRound].normal = ((msg.value * normalRewardFactor) / 100) / nftsNormal;
        stakingRoundsEth[currentRound].rare = ((msg.value * rareRewardFactor) / 100) / nftsRare;
        stakingRoundsEth[currentRound].epic = ((msg.value * epicRewardFactor) / 100) / nftsEpic;
        stakingRoundsEth[currentRound].legendary = ((msg.value * legendaryRewardFactor) / 100) / nftsLegendary;
    }


    function viewRewardTokens(uint roundNumber, uint normal, uint rare, uint epic, uint legendary) public view returns (uint) {

        uint balance = IERC721AQueryable(nftAddress).balanceOf(msg.sender);
        if (balance == 0) revert RequireAnyNft();
        if (balance < (normal + rare + epic + legendary)) revert NFTsAmountIncorrect();

        uint reward = 0;
        reward += (normal * stakingRoundsTokens[roundNumber].normal);
        reward += (rare * stakingRoundsTokens[roundNumber].rare);
        reward += (epic * stakingRoundsTokens[roundNumber].epic);
        reward += (legendary * stakingRoundsTokens[roundNumber].legendary);

        return reward;
    }

    function viewRewardEth(uint roundNumber, uint normal, uint rare, uint epic, uint legendary) public view returns (uint) {
        uint balance = IERC721AQueryable(nftAddress).balanceOf(msg.sender);
        if (balance == 0) revert RequireAnyNft();
        if (balance < (normal + rare + epic + legendary)) revert NFTsAmountIncorrect();

        uint reward = 0;

        reward += (normal * stakingRoundsEth[roundNumber].normal);
        reward += (rare * stakingRoundsEth[roundNumber].rare);
        reward += (epic * stakingRoundsEth[roundNumber].epic);
        reward += (legendary * stakingRoundsEth[roundNumber].legendary);

        return reward;
    }

    function withdrawRewardForRound(uint roundNumber, uint normal, uint rare, uint epic, uint legendary, uint _blockTimestamp, bytes memory signature) public {
        if (block.timestamp >= _blockTimestamp + 1 minutes) revert BadTimeStamp();
        if (!verifyAddressSigner(withdrawAddress, hashMessage(roundNumber, normal, rare, epic, legendary, _blockTimestamp, msg.sender), signature)) revert NotHolder();

        uint reward_tokens = viewRewardTokens(roundNumber, normal, rare, epic, legendary);
        uint reward_eth = viewRewardEth(roundNumber, normal, rare, epic, legendary);
        if (reward_tokens + reward_eth == 0) revert  NoRewardToWithdraw();

        uint[] memory tokens_of_owner = IERC721AQueryable(nftAddress).tokensOfOwner(msg.sender);
        uint total = normal + rare + epic + legendary;
        uint sum = 0;
        for (uint16 i = 0; i < tokens_of_owner.length; i++) {
            if (tokens_of_owner[i] > stakingRounds[roundNumber].nfts) continue;
            if (tokenRoundStats[roundNumber][tokens_of_owner[i]].paid == false) {
                tokenRoundStats[roundNumber][tokens_of_owner[i]].paid = true;
                tokenRoundStats[roundNumber][tokens_of_owner[i]].lastUpdateTimestamp = block.timestamp;
                nftsIdsPaid[roundNumber].push(tokens_of_owner[i]);

                emit REWARD_CLAIMED_NFT(roundNumber, msg.sender, block.timestamp, tokens_of_owner[i]);
                sum++;
            }
        }
        if (sum != total) revert NFTsAlreadyClaimed();

        if (reward_tokens > 0) {
            IERC20 _tokenContract = IERC20(tokenAddress);
            _tokenContract.transfer(msg.sender, reward_tokens);
        }

        if (reward_eth > 0) {
            (bool os,) = payable(msg.sender).call{value : reward_eth}("");
            require(os);
        }

        emit REWARD_CLAIMED(currentRound, msg.sender, block.timestamp, reward_eth, reward_tokens);

    }


    // TODO
    //    function withdrawReward(uint roundNumber, address account, uint normal, uint rare, uint epic, uint legendary) external {
    //        require(msg.sender == reward_aggregator, "Unauthorized");
    //        uint reward = viewReward(roundNumber);
    //
    //
    //        emit REWARD_CLAIMED(currentRound, msg.sender, block.timestamp, reward);
    //    }


    function tokensPaidOfRound(uint round) external view returns (uint256[] memory) {
        return nftsIdsPaid[round];
    }


    function viewContractBalance() external view returns (uint){
        return address(this).balance;
    }

    function emergencyWithdraw() external onlyOwner {
        uint256 contractBalance = address(this).balance;
        (bool os,) = payable(owner()).call{value : contractBalance}("");
        require(os);

        IERC20 _tokenContract = IERC20(tokenAddress);
        _tokenContract.transfer(owner(), _tokenContract.balanceOf(address(this)));
    }

    function setNormalRewardFactor(uint _normal_reward_factor) external onlyOwner {
        normalRewardFactor = _normal_reward_factor;
    }

    function setRareRewardFactor(uint _rare_reward_factor) external onlyOwner {
        rareRewardFactor = _rare_reward_factor;
    }

    function setEpicRewardFactor(uint _epic_reward_factor) external onlyOwner {
        epicRewardFactor = _epic_reward_factor;
    }

    function setLegendaryRewardFactor(uint _legendary_reward_factor) external onlyOwner {
        legendaryRewardFactor = _legendary_reward_factor;
    }


}

