// import "hardhat/console.sol";

contract Playground is Initializable, AccessControlUpgradeable {
    event BoxOpen(uint256 indexed tokenId, address indexed user);

    bytes32 public constant OPERATOR_ROLE = keccak256("OPERATOR_ROLE");

    struct ProductInfo {
        bool suspended; // suspended= true ,box can't be opened
        uint256 boxNum; // total box num
        uint256 opened; // total opened num
        uint256 openTime; // open time
        uint256 tokenId; // tokenId
    }

    // cur product id ,from 1,
    uint16 public curProductId;

    // tokenNo => box /nft address
    mapping(uint8 => address) public tokenNo2Address;

    // box limit per address
    // tokenId => limit num
    mapping(uint256 => uint8) public boxConfLimited;

    // productId  => prodiuct info
    mapping(uint16 => ProductInfo) public productBoxInfo;

    // user opened num
    // user address => box tokenId => opened num
    mapping(address => mapping(uint256 => uint8)) public userOpened;

    // tokenId => product id list
    mapping(uint256 => uint16[]) public tokenId2Product;

    /**
     * save normal NFT conf info
     * key-uint24 : pid | index-8 (0...)
     * value:uint256[]
     * value[0]:num|(tokenNo-8),     num:nft num,
     * value[1...] : leftNum | class-8    ,leftNum: nft num left to mint
     */
    mapping(uint24 => uint256[]) public type1INfo;
    /**
     * save spec NFT conf info, which
     * key-uint24 : pid | index-8 (0...)
     * value:uint256[]
     * value[0]:thresholdClass-8|(tokenNo-8) ,thresholdClass:The lowest class,
     * value[1...] : leftNum | class-8   ,leftNum: nft num left to mint
     */
    mapping(uint24 => uint256[]) public type2INfo;

    function initialize() public initializer {
        _grantRole(DEFAULT_ADMIN_ROLE, _msgSender());
        _grantRole(OPERATOR_ROLE, _msgSender());
        boxConfLimited[7] = 1;
    }

    struct BoxInfoBindView {
        uint256 tokenId;
        uint256 boxNum;
        uint256 openTime;
    }

    struct Type1Conf {
        uint8 tokenNo;
        uint8 num;
        uint256[] nums; // num per class eg:[1,1,1,1,1,1]
    }

    struct Type2Conf {
        uint8 tokenNo;
        uint256[] nums; // num per class
    }

    /**
     * configure product info and the type info(nft left num to mint)
     */
    function issueAndBindBox(
        BoxInfoBindView calldata boxInfoView,
        Type1Conf[] calldata type1Confs,
        uint8 type2Class,
        Type2Conf[] calldata type2Confs,
        bool issue
    ) public onlyRole(OPERATOR_ROLE) {
        curProductId++;
        productBoxInfo[curProductId] = ProductInfo({
            suspended: false,
            boxNum: boxInfoView.boxNum,
            opened: 0,
            openTime: boxInfoView.openTime,
            tokenId: boxInfoView.tokenId
        });
        tokenId2Product[boxInfoView.tokenId].push(curProductId);
        for (uint8 i = 0; i < type1Confs.length; i++) {
            Type1Conf calldata _conf = type1Confs[i];
            uint24 _key = (uint24(curProductId) << 8) | i;
            uint256 data0 = (uint256(_conf.num) << 8) | _conf.tokenNo;
            _confNFTInfo(
                type1INfo[_key],
                data0,
                _conf.nums,
                _conf.tokenNo,
                issue
            );
        }
        if (type2Class == 0 || type2Confs.length != 2) {
            return;
        }
        for (uint8 i = 0; i < 2; i++) {
            Type2Conf calldata conf = type2Confs[i];
            uint24 _key = (uint24(curProductId) << 8) | i;
            uint256 data0 = (uint256(type2Class) << 8) | conf.tokenNo;
            _confNFTInfo(
                type2INfo[_key],
                data0,
                conf.nums,
                conf.tokenNo,
                issue
            );
        }
    }

    function openBox(uint256 tokenId) public {
        require(
            userOpened[msg.sender][tokenId] < boxConfLimited[tokenId],
            "open limited"
        );
        userOpened[msg.sender][tokenId]++;
        (, uint16 _productId) = getCurProInfo(tokenId);
        IERC1155Burnable(tokenNo2Address[0]).burn(msg.sender, tokenId, 1);
        emit BoxOpen(tokenId, msg.sender);
        uint256 random = getRandom(block.number, gasleft());
        productBoxInfo[_productId].opened++;
        handleNFT2(_productId, random, msg.sender);
        handleNFT1(_productId, random, msg.sender);
    }

    function openBoxBatch(uint256 num, uint256 tokenId) public {
        for (uint256 i = 0; i < num; i++) {
            openBox(tokenId);
        }
    }

    function setTokenId2Product(uint256 tokenId, uint16[] memory pids)
        public
        onlyRole(OPERATOR_ROLE)
    {
        tokenId2Product[tokenId] = pids;
    }

    /**
     * conf the nft num to mint
     */
    function _confNFTInfo(
        uint256[] storage info,
        uint256 data0,
        uint256[] calldata nums,
        uint8 tokenNo,
        bool issue
    ) internal {
        info.push(data0);
        for (uint8 j = 0; j < nums.length; j++) {
            if (nums[j] == 0) {
                continue;
            }
            info.push(((nums[j]) << 8) | (j + 1));
            if (issue) {
                _issueNFT(tokenNo, curProductId, (j + 1), nums[j]);
            }
        }
    }

    /**
     * conf the nft num info
     */
    function _issueNFT(
        uint8 tokenNo,
        uint16 productId,
        uint8 class,
        uint256 num
    ) internal {
        INFT(tokenNo2Address[tokenNo]).issueNFT(productId, class, num);
    }

    function setOpenTime(uint16 _productId, uint256 _openTime)
        public
        onlyRole(OPERATOR_ROLE)
    {
        productBoxInfo[_productId].openTime = _openTime;
    }

    function setStatus(uint16 _productId, bool _suspended)
        public
        onlyRole(OPERATOR_ROLE)
    {
        productBoxInfo[_productId].suspended = _suspended;
    }

    function setAddress(uint8[] memory tokenNo, address[] memory addresses)
        public
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        require(tokenNo.length == addresses.length, "param err");
        for (uint256 i = 0; i < tokenNo.length; i++) {
            tokenNo2Address[tokenNo[i]] = addresses[i];
        }
    }

    function getCurProInfo(uint256 tokenId)
        public
        view
        returns (ProductInfo memory _info, uint16 productId)
    {
        uint16[] memory proIds = tokenId2Product[tokenId];
        require(proIds.length > 0, "tokenId err");
        for (uint256 i = 0; i < proIds.length; i++) {
            uint16 _productId = proIds[i];
            ProductInfo memory info = productBoxInfo[_productId];
            if (info.boxNum > info.opened && !info.suspended) {
                _info = info;
                productId = _productId;
                break;
            }
        }
        require(productId > 0, "tokenId err");
    }

    function handleNFT2(
        uint16 _productId,
        uint256 random,
        address user
    ) internal {
        bool isMeet;
        for (uint256 i = 0; i < 2; i++) {
            uint24 key = (uint24(_productId) << 8) | uint8(((random + i) % 2));
            if (type2INfo[key].length == 0) {
                return; // no conf
            }
            uint256[] memory confs = type2INfo[key];
            if (confs.length == 1) {
                continue;
            }
            uint256 infoKey;
            if (i == 0) {
                infoKey = (random % (confs.length - 1)) + 1;
                uint8 _sclass = uint8(type2INfo[key][0] >> 8);
                isMeet = uint8(confs[infoKey]) >= _sclass;
            } else {
                infoKey = _selectClass(_productId, key, isMeet, random);
                require(infoKey > 0, "infoKey err");
            }
            _mintAndUpdate(_productId, type2INfo[key], infoKey, user);
        }
    }

    /**
     * pick a class that meets the minimum class requirement
     */
    function _selectClass(
        uint16 _productId,
        uint24 key,
        bool meet,
        uint256 random
    ) internal view returns (uint256) {
        uint256[] memory confs = type2INfo[key];
        uint8 sclass = uint8(confs[0] >> 8);
        for (uint256 i = 1; i < confs.length; i++) {
            uint256 infoIndex = ((random + i) % (confs.length - 1)) + 1;
            uint256 info = confs[infoIndex];
            uint8 class = uint8(info);
            if (!meet && class < sclass) {
                continue;
            }
            uint256 leftNum = _getLeftNum(_productId);
            if (class > sclass) {
                leftNum--;
            }
            uint256 needNum = productBoxInfo[_productId].boxNum -
                productBoxInfo[_productId].opened;
            if (leftNum >= needNum) {
                return infoIndex;
            }
        }
        return 0;
    }

    /**
     * calc the remaining mintable amount above this class
     */
    function _getLeftNum(uint16 _productId) internal view returns (uint256) {
        uint256 total;
        for (uint24 i = 0; i < 2; i++) {
            uint24 key = (uint24(_productId) << 8) | i;
            uint256[] memory confs = type2INfo[key];
            uint8 sclass = uint8(confs[0] >> 8);
            for (uint256 j = 1; j < confs.length; j++) {
                uint256 info = confs[j];
                uint8 class = uint8(info);
                if (class >= sclass) {
                    total += uint256(info >> 8);
                }
            }
        }
        return total;
    }

    function handleNFT1(
        uint16 _productId,
        uint256 random,
        address user
    ) internal {
        for (uint8 i = 0; i < 30; i++) {
            uint24 key = (uint24(_productId) << 8) | i;
            uint256 leftLen = type1INfo[key].length;
            if (leftLen == 1) {
                continue;
            } else if (leftLen == 0) {
                break;
            }
            uint256 conf = type1INfo[key][0];
            uint256 num = conf >> 8;
            for (uint256 j = 0; j < num; j++) {
                leftLen = type1INfo[key].length;
                uint256 diff = getRandom(random, i * 30 + j);
                uint256 leftInfoKey = (diff % (leftLen - 1)) + 1;
                _mintAndUpdate(_productId, type1INfo[key], leftInfoKey, user);
            }
        }
    }

    /**
     * mint the nft & update left num info
     */
    function _mintAndUpdate(
        uint16 productId,
        uint256[] storage info,
        uint256 _leftInfoKey,
        address user
    ) internal {
        uint256 leftLen = info.length;
        uint256 leftInfo = info[_leftInfoKey];
        uint256 leftNum = leftInfo >> 8;
        address tokenAddr = tokenNo2Address[uint8(info[0])];
        INFT(tokenAddr).mintNFT(productId, user, uint8(leftInfo));
        if (leftNum > 1) {
            info[_leftInfoKey] = ((leftNum - 1) << 8) | uint8(leftInfo);
        } else {
            if (leftLen > 2) {
                info[_leftInfoKey] = info[leftLen - 1];
            }
            info.pop();
        }
    }

    function getRandom(uint256 _random, uint256 nonce)
        internal
        pure
        returns (uint256)
    {
        return uint256(keccak256(abi.encodePacked(_random, nonce)));
    }
}