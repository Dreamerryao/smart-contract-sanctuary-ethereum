import "@openzeppelin/contracts/token/ERC20/ERC20.sol";

contract MultiTokenSwap {
    
    address public repTokenAddress; 
    address public swapToken1Address; 
    address public swapToken2Address; 
    address public swapToken3Address; 

    uint256 public swapToken1Ratio; 
    uint256 public swapToken2Ratio; 
    uint256 public swapToken3Ratio; 

    uint256 public ratioSendToRecieve = 10; 

    uint256 public userRepTokenBalance; 
    uint256 public userSwapToken1Balance; 
    uint256 public userSwapToken2Balance; 
    uint256 public userSwapToken3Balance; 
    uint256 public contractRepTokenBalance; 
    uint256 public contractSwapToken1Balance; 
    uint256 public contractSwapToken2Balance; 
    uint256 public contractSwapToken3Balance; 

    constructor() {
        repTokenAddress = 0xd9145CCE52D386f254917e481eB44e9943F39138; // TokenA Remix London
        swapToken1Address = 0xd8b934580fcE35a11B58C6D73aDeE468a2833fa8; // TokenB Remix London
        swapToken2Address = 0xf8e81D47203A594245E36C48e151709F0C19fBe8; // TokenC Remix London
        // repTokenAddress = 0x8eB86DFD5480cdf6aaccE6D915e3425e650f4FDd; // TokenA Goerli
        // swapToken1Address = 0x63C768399fd71ff977EE40Dd4fc53e2a8c35c65b; // TokenB Goerli
        // swapToken2Address = 0xba0cEcf7103Ab7e8baFEccD09644e79b3D60d374; // TokenC Goerli
        swapToken1Ratio = 10; // 0.1 swapToken1 for 1 repToken
        swapToken2Ratio = 100; // 0.01 swapToken2 for 1 repToken
    }

    function getUserRepTokenBalance() public returns (uint256) {
        userRepTokenBalance = IERC20(repTokenAddress).balanceOf(msg.sender);
        return userRepTokenBalance; 
    } 

    function getUserSwapToken1Balance() public returns (uint256) {
        userSwapToken1Balance = IERC20(swapToken1Address).balanceOf(msg.sender);
        return userSwapToken1Balance; 
    } 

    function getUserSwapToken2Balance() public returns (uint256) {
        userSwapToken2Balance = IERC20(swapToken2Address).balanceOf(msg.sender);
        return userSwapToken2Balance; 
    } 

    function getUserSwapToken3Balance() public returns (uint256) {
        userSwapToken3Balance = IERC20(swapToken3Address).balanceOf(msg.sender);
        return userSwapToken3Balance; 
    } 

    function getContractRepTokenBalance() public returns (uint256) {
        contractRepTokenBalance = IERC20(repTokenAddress).balanceOf(msg.sender);
        return contractRepTokenBalance; 
    } 

    function getContractSwapToken1Balance() public returns (uint256) {
        contractSwapToken1Balance = IERC20(swapToken1Address).balanceOf(msg.sender);
        return contractSwapToken1Balance; 
    } 

    function getContractSwapToken2Balance() public returns (uint256) {
        contractSwapToken2Balance = IERC20(swapToken2Address).balanceOf(msg.sender);
        return contractSwapToken2Balance; 
    } 

    function getContractSwapToken3Balance() public returns (uint256) {
        contractSwapToken3Balance = IERC20(swapToken3Address).balanceOf(msg.sender);
        return contractSwapToken3Balance; 
    } 

    function trasferToContract(address tokenSendAddress, address userAddress, uint256 amount) public {
        IERC20(tokenSendAddress).transferFrom(userAddress, address(this), amount);
    }

    function contractGiveApproval(address tokenRecieveAddress, address userAddress, uint256 exchangeAmount) public {
        IERC20(tokenRecieveAddress).approve(userAddress, exchangeAmount);
    } 

    function trasferFromContract(address tokenRecieveAddress, address userAddress, uint256 exchangeAmount) public returns (address) {
        IERC20(tokenRecieveAddress).transferFrom(
            address(this), 
            userAddress, 
            exchangeAmount 
        ); 
        return msg.sender; 
    } 

    function multiTokenSwap(uint256 amountSwapToken1, uint256 amountSwapToken2) public returns (uint256) {
        require(amountSwapToken1 > 0, "amountSwapToken1 must be greater then zero"); 
        require(amountSwapToken2 > 0, "amountSwapToken2 must be greater then zero"); 
        require(
            IERC20(swapToken1Address).balanceOf(msg.sender) >= amountSwapToken1,
            "sender doesn't have enough of swapToken1"
        );
        require(
            IERC20(swapToken2Address).balanceOf(msg.sender) >= amountSwapToken2,
            "sender doesn't have enough of swapToken2"
        );
        uint256 exchangeRepTokenAmount; 
        uint256 exchangeSwapToken1Amount; 
        uint256 exchangeSwapToken2Amount; 
        uint256 val1 = (amountSwapToken1 * swapToken1Ratio) * 10; 
        uint256 val2 = (amountSwapToken2 * swapToken2Ratio) * 10; 

        if (val1 <= val2) {
            exchangeRepTokenAmount = (amountSwapToken1 * swapToken1Ratio); 
            exchangeSwapToken1Amount = amountSwapToken1; 
            exchangeSwapToken2Amount = (amountSwapToken1 * swapToken1Ratio) / swapToken2Ratio; 
            // exchangeSwapToken2Amount = amountSwapToken1 * 10 / 100; 

        } else { 
            exchangeRepTokenAmount = (amountSwapToken2 * swapToken2Ratio); 
            exchangeSwapToken1Amount = (amountSwapToken2 * swapToken2Ratio) / swapToken1Ratio; 
            // exchangeSwapToken1Amount = amountSwapToken2 * 100 / 10 * 10**18; 
            exchangeSwapToken2Amount = amountSwapToken2; 
        } 
        require(
            exchangeRepTokenAmount > 0,
            "exchange amount must be greater then zero"
        );

        IERC20(swapToken1Address).transferFrom(msg.sender, address(this), exchangeSwapToken1Amount);
        IERC20(swapToken2Address).transferFrom(msg.sender, address(this), exchangeSwapToken2Amount);

        IERC20(repTokenAddress).approve(address(this), exchangeRepTokenAmount);

        IERC20(repTokenAddress).transferFrom(
            address(this), 
            msg.sender, 
            exchangeRepTokenAmount 
        ); 

        return exchangeSwapToken2Amount; 
    } 

    function mul(uint256 x, uint256 y) internal pure returns (uint256 z) {
        require(y == 0 || (z = x * y) / y == x, "ds-math-mul-overflow");
    }

}

