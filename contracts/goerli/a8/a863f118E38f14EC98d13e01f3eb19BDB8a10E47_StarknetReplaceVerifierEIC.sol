pragma solidity ^0.6.12;

import "ExternalInitializer.sol";
import "Identity.sol";
import "Addresses.sol";
import "NamedStorage.sol";

/*
  This contract is an external initializing contract that replaces
  the verifier address.
*/
contract StarknetReplaceVerifierEIC is ExternalInitializer {
    using Addresses for address;
    string internal constant VERIFIER_ADDRESS_TAG = "STARKNET_1.0_INIT_VERIFIER_ADDRESS";

    event VerifierReplaced(address oldVerifier, address newVerifier);

    /*
      The initiatialize function gets two parameters in the bytes array:
      1. New verifier address,
      2. Keccak256 of the expected verifier ID.
    */
    function initialize(bytes calldata data) public virtual override {
        require(data.length == 64, "UNEXPECTED_DATA_SIZE");
        address newVerifierAddress;
        bytes32 newVerifierIdHash;

        // Extract sub-contract address and hash of verifierId.
        (newVerifierAddress, newVerifierIdHash) = abi.decode(data, (address, bytes32));

        _checkAndPerform(newVerifierAddress, newVerifierIdHash);
        emit LogExternalInitialize(data);
    }

    /*
      Checks for validity of verifier provided and performs the verifier replacement.
    */
    function _checkAndPerform(address newVeriferAddress, bytes32 hashExpectedId) private {
        require(newVeriferAddress.isContract(), "ADDRESS_NOT_CONTRACT");
        bytes32 hashRealId = keccak256(abi.encodePacked(Identity(newVeriferAddress).identify()));
        require(hashRealId == hashExpectedId, "UNEXPECTED_CONTRACT_IDENTIFIER");
        _setVerifierAddress(newVeriferAddress);
    }

    /*
      Sets the new value and emit apropriate event.
    */
    function _setVerifierAddress(address newVeriferAddress) private {
        address currentVerifier = NamedStorage.getAddressValue(VERIFIER_ADDRESS_TAG);
        emit VerifierReplaced(currentVerifier, newVeriferAddress);
        NamedStorage.setAddressValue(VERIFIER_ADDRESS_TAG, newVeriferAddress);
    }
}