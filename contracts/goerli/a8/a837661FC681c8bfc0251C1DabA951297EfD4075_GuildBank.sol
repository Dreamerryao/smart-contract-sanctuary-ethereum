contract GuildBank is IGuildBank, Pausable, ReentrancyGuard, ERC721Holder, ERC1155Holder {
    using EnumerableSet for EnumerableSet.UintSet;

    /*///////////////////////////////////////////////////////////////
                                ERRORS
    //////////////////////////////////////////////////////////////*/

    error AlreadyAdded();
    error AlreadyRemoved();
    error UnsupportedCollection();
    error OnlyGuildContract();
    error InvalidAmount();
    error InvalidRentalId();
    error InvalidRentalIndex();
    error NotAssetOwner();
    error InvalidDuration();
    error InvalidShare();
    error NotExpired();
    error AlreadyActive();
    error DoubleWithdrawal();
    error UnexpectedCollection();

    /*///////////////////////////////////////////////////////////////
                                STRUCTS
    //////////////////////////////////////////////////////////////*/

    struct GuildBankStorage {
        mapping(address => address) collectionRouters;
        mapping(address => EnumerableSet.UintSet) ownerRentalIds;
        mapping(address => EnumerableSet.UintSet) userRentalIds;
        mapping(uint256 => IGuildBank.Rental) rentals;
        mapping(address => mapping(uint256 => uint256)) totalDeposits;
        mapping(address => mapping(uint256 => uint256)) totalRentals;
        mapping(uint256 => bool) rentalWithdrawalCheck;
        mapping(uint256 => uint256) rentalIdToRightsId;
        uint256 currentRentalId;
    }

    /*///////////////////////////////////////////////////////////////
                                STATE VARIABLES
    //////////////////////////////////////////////////////////////*/

    uint256 public constant MAX_SHARE = 100;

    bytes4 private constant INTERFACE_ID_ERC721 = 0x80ac58cd;
    bytes4 private constant INTERFACE_ID_ERC1155 = 0xd9b67a26;

    address public immutable guildContract;

    GuildBankStorage private s;

    /*///////////////////////////////////////////////////////////////
                                MODIFIERS
    //////////////////////////////////////////////////////////////*/

    modifier onlyValidRentalId(uint256 rentalId) {
        if (getRentalBalance() <= rentalId) revert InvalidRentalId();
        _;
    }

    modifier onlySupportedCollection(address collection) {
        if (s.collectionRouters[collection] == address(0)) revert UnsupportedCollection();
        _;
    }

    modifier onlyGuildContract() {
        if (msg.sender != guildContract) revert OnlyGuildContract();
        _;
    }

    /*///////////////////////////////////////////////////////////////
                                CONSTRUCTOR
    //////////////////////////////////////////////////////////////*/

    constructor(address _guild) {
        guildContract = _guild;
    }

    /*///////////////////////////////////////////////////////////////
                                USER FUNCTIONS
    //////////////////////////////////////////////////////////////*/

    function deposit(
        address _depositor,
        address _collection,
        uint256 _tokenId,
        uint32 _share,
        uint64 _duration,
        uint32 _amount
    )
        external
        onlySupportedCollection(_collection)
        onlyGuildContract
        nonReentrant
        whenNotPaused
        returns (uint256 rentalId_)
    {
        return _deposit(_depositor, _collection, _tokenId, _share, _duration, _amount);
    }

    function rent(
        address _renter,
        uint256 _rentalId,
        uint32 _amountToRent
    )
        external
        onlyValidRentalId(_rentalId)
        onlyGuildContract
        nonReentrant
        whenNotPaused
        returns (uint256 newRentalId_)
    {
        // activate the rental
        newRentalId_ = _rent(_renter, _rentalId, _amountToRent);

        // call the router
        address collection = s.rentals[_rentalId].collection;
        address router = s.collectionRouters[collection];
        IGuildRouter(router).invokeRental(_rentalId);
    }

    function withdraw(
        address _depositor,
        uint256 _rentalId
    ) external onlyValidRentalId(_rentalId) onlyGuildContract nonReentrant whenNotPaused {
        if (s.rentals[_rentalId].isActive) {
            // if the assets were already rented, call the router and receive the assets
            address collection = s.rentals[_rentalId].collection;
            address router = s.collectionRouters[collection];
            IGuildRouter(router).revokeRental(_rentalId);
        }

        // deactivate the rental
        _withdraw(_depositor, _rentalId);
    }

    /*///////////////////////////////////////////////////////////////
                            SETTERS
    //////////////////////////////////////////////////////////////*/

    function addCollectionRouter(address _collection, address _router) external onlyGuildContract {
        if (s.collectionRouters[_collection] != address(0)) revert AlreadyAdded();
        s.collectionRouters[_collection] = _router;

        bool requireAssetTransferFromApproval = IGuildRouter(_router).requireAssetTransferFromApproval();
        if (requireAssetTransferFromApproval) {
            // since IERC721 and IERC1155 have the same interface, this works for both of them
            IERC721(_collection).setApprovalForAll(_router, true);
        }
    }

    function removeCollectionRouter(address _collection) external onlyGuildContract {
        address router = s.collectionRouters[_collection];

        if (router == address(0)) revert AlreadyRemoved();
        delete s.collectionRouters[_collection];

        bool requireAssetTransferFromApproval = IGuildRouter(router).requireAssetTransferFromApproval();
        if (requireAssetTransferFromApproval) {
            // since IERC721 and IERC1155 have the same interface, this works for both of them
            IERC721(_collection).setApprovalForAll(router, false);
        }
    }

    /*///////////////////////////////////////////////////////////////
                                GETTERS
    //////////////////////////////////////////////////////////////*/

    function getCollectionRouter(address _collection) external view returns (address) {
        return s.collectionRouters[_collection];
    }

    function getRightsIdByRentalId(uint256 _rentalId) external view returns (uint256) {
        return s.rentalIdToRightsId[_rentalId];
    }

    function getRentalBalance() public view returns (uint256) {
        return s.currentRentalId;
    }

    function getRentalById(uint256 _id) external view onlyValidRentalId(_id) returns (Rental memory) {
        return s.rentals[_id];
    }

    function getUserRentalBalance(address _user) public view returns (uint256) {
        return s.userRentalIds[_user].length();
    }

    function getUserRentalByIndex(address _user, uint256 _index) external view returns (Rental memory) {
        if (getUserRentalBalance(_user) <= _index) revert InvalidRentalIndex();
        return s.rentals[s.userRentalIds[_user].at(_index)];
    }

    function getUserRentalIds(address _user) external view returns (uint256[] memory) {
        return s.userRentalIds[_user].values();
    }

    function getOwnerRentalBalance(address _user) public view returns (uint256) {
        return s.ownerRentalIds[_user].length();
    }

    function getOwnerRentalByIndex(address _owner, uint256 _index) external view returns (Rental memory) {
        if (getOwnerRentalBalance(_owner) <= _index) revert InvalidRentalIndex();
        return s.rentals[s.ownerRentalIds[_owner].at(_index)];
    }

    function getOwnerRentalIds(address _owner) external view returns (uint256[] memory) {
        return s.ownerRentalIds[_owner].values();
    }

    function getDepositCount(uint256 _rentalId) external view onlyValidRentalId(_rentalId) returns (uint256) {
        Rental memory rental = s.rentals[_rentalId];

        address collection = rental.collection;
        uint256 tokenId = rental.tokenId;
        bool isERC721 = _getCollectionType(collection);

        if (isERC721) {
            return s.totalDeposits[collection][0];
        } else {
            return s.totalDeposits[collection][tokenId];
        }
    }

    function getRentalCount(uint256 _rentalId) external view onlyValidRentalId(_rentalId) returns (uint256) {
        Rental memory rental = s.rentals[_rentalId];

        address collection = rental.collection;
        uint256 tokenId = rental.tokenId;
        bool isERC721 = _getCollectionType(collection);

        if (isERC721) {
            return s.totalRentals[collection][0];
        } else {
            return s.totalRentals[collection][tokenId];
        }
    }

    /*///////////////////////////////////////////////////////////////
                            INTERNAL FUNCTIONS
    //////////////////////////////////////////////////////////////*/

    function _deposit(
        address _depositor,
        address _collection,
        uint256 _tokenId,
        uint32 _share,
        uint64 _duration,
        uint32 _amount
    ) internal returns (uint256 rentalId) {
        bool isERC721 = _getCollectionType(_collection);

        if (isERC721 && _amount != 1) revert InvalidAmount();
        if (!isERC721 && _amount == 0) revert InvalidAmount();
        if (_duration == 0) revert InvalidDuration();
        if (_share >= MAX_SHARE) revert InvalidShare();

        // create the rental
        rentalId = s.currentRentalId;

        s.rentals[rentalId] = Rental(
            _collection,
            _tokenId,
            _depositor,
            address(0),
            _share,
            _duration,
            0,
            _amount,
            false
        );
        s.ownerRentalIds[_depositor].add(rentalId);
        ++s.currentRentalId;

        // deposit the asset and increase the total deposit count
        if (isERC721) {
            s.totalDeposits[_collection][0] += _amount;
            IERC721(_collection).safeTransferFrom(_depositor, address(this), _tokenId);
        } else {
            s.totalDeposits[_collection][_tokenId] += _amount;
            IERC1155(_collection).safeTransferFrom(_depositor, address(this), _tokenId, _amount, "");
        }

        return rentalId;
    }

    function _rent(address _renter, uint256 _rentalId, uint32 _amountToRent) internal returns (uint256 newRentalId_) {
        // activate the rental
        Rental memory rental = s.rentals[_rentalId];
        if (rental.isActive) revert AlreadyActive();
        if (rental.amount < _amountToRent) revert InvalidAmount();
        if (_amountToRent == 0) revert InvalidAmount();

        s.rentals[_rentalId].isActive = true;
        s.rentals[_rentalId].user = _renter;
        s.rentals[_rentalId].expiry = uint64(block.timestamp + rental.duration * 3600);
        s.userRentalIds[_renter].add(_rentalId);

        // if the user doesn't rent the full amount, create a new rental.
        uint32 remainingAmount = rental.amount - _amountToRent;
        if (remainingAmount > 0) {
            // update the current rental amount
            s.rentals[_rentalId].amount = _amountToRent;

            // create a new rental
            newRentalId_ = s.currentRentalId;

            s.rentals[newRentalId_] = Rental(
                rental.collection,
                rental.tokenId,
                rental.owner,
                address(0),
                rental.share,
                rental.duration,
                0,
                remainingAmount,
                false
            );
            s.ownerRentalIds[rental.owner].add(newRentalId_);
            ++s.currentRentalId;
        }

        // increase the total rental count
        bool isERC721 = _getCollectionType(rental.collection);
        if (isERC721) {
            s.totalRentals[rental.collection][0] += _amountToRent;
        } else {
            s.totalRentals[rental.collection][rental.tokenId] += _amountToRent;
        }
    }

    function _withdraw(address _depositor, uint256 _rentalId) internal {
        Rental memory rental = s.rentals[_rentalId];
        if (s.rentalWithdrawalCheck[_rentalId]) revert DoubleWithdrawal();
        if (rental.owner != _depositor) revert NotAssetOwner();
        if (rental.user != address(0) && block.timestamp < rental.expiry) revert NotExpired();

        s.rentalWithdrawalCheck[_rentalId] = true;
        s.rentals[_rentalId].isActive = false;
        s.ownerRentalIds[_depositor].remove(_rentalId);
        if (rental.user != address(0)) {
            s.userRentalIds[rental.user].remove(s.currentRentalId);
        }

        // withdraw the asset and decrease the total deposit count
        bool isERC721 = _getCollectionType(rental.collection);
        if (isERC721) {
            s.totalDeposits[rental.collection][0] -= rental.amount;
            IERC721(rental.collection).safeTransferFrom(address(this), _depositor, rental.tokenId);
        } else {
            s.totalDeposits[rental.collection][rental.tokenId] -= rental.amount;
            IERC1155(rental.collection).safeTransferFrom(address(this), _depositor, rental.tokenId, rental.amount, "");
        }
    }

    /*///////////////////////////////////////////////////////////////
                               PRIVATE FUNCTIONS
    //////////////////////////////////////////////////////////////*/

    function _getCollectionType(address _collection) private view returns (bool isERC721_) {
        if (IERC165(_collection).supportsInterface(INTERFACE_ID_ERC721)) {
            isERC721_ = true;
        } else if (IERC165(_collection).supportsInterface(INTERFACE_ID_ERC1155)) {
            isERC721_ = false;
        } else {
            revert UnexpectedCollection();
        }
    }
}

