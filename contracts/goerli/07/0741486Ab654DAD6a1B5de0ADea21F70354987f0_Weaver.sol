contract ShareWrapper {
    using SafeERC20 for IERC20;

    uint256 private _totalSupply;
    mapping(uint256 => uint256) private _balances; // token id to balance

    function totalSupply() public view returns (uint256) {
        return _totalSupply;
    }

    function balanceOf(uint256 tokenId) public view returns (uint256) {
        return _balances[tokenId];
    }

    function stake(uint256 amount, uint256 tokenId) internal virtual {
        // use tokenid instead of msg.sender
        _totalSupply = _totalSupply + amount;
        _balances[tokenId] = amount;
    }

    function withdrawShare(uint256 tokenId) internal virtual {
        _totalSupply = _totalSupply - _balances[tokenId];
        _balances[tokenId] = 0;
    }
}

contract Weaver is ShareWrapper, ContractGuard, ve {
    using SafeERC20 for IERC20;
    using Address for address;
    using SafeMath for uint256;

    /* ========== DATA STRUCTURES ========== */

    struct Seniorageseat {
        uint256 lastSnapshotIndex;
        uint256 rewardEarned;
        uint256 epochTimerStart;
    }

    struct SenioragePoolSnapshot {
        uint256 time;
        uint256 rewardReceived;
        uint256 rewardPerShare;
    }

    /* ========== STATE VARIABLES ========== */

    // governance
    address public operator;

    // flags
    IERC20 public weth;
    IERC20 public lock_token;
    NetherOracle public netherOracle;
    bool public started;

    mapping(uint256 => Seniorageseat) public seniors;
    SenioragePoolSnapshot[] public senioragePoolHistory;

    event Initialized(address indexed executor, uint256 at);
    event Staked(address indexed user, uint256 amount);
    event Withdrawn(address indexed user, uint256 amount);
    event RewardPaid(address indexed user, uint256 reward);
    event RewardAdded(address indexed user, uint256 reward);

    /* ========== Constructor ============= */
    constructor() ve() {}

    /* ========== Modifiers =============== */

    modifier onlyOperator() {
        require(
            operator == msg.sender,
            "SenioragePool: caller is not the operator"
        );
        _;
    }

    modifier seniorageExists(uint256 tokenId) {
        require(
            balanceOf(tokenId) > 0,
            "SenioragePool: The seniorage does not exist"
        );
        _;
    }

    modifier updateReward(uint256 tokenId) {
        Seniorageseat memory seat = seniors[tokenId];
        seat.rewardEarned = earned(tokenId);
        seat.lastSnapshotIndex = latestSnapshotIndex();
        seniors[tokenId] = seat;
        _;
    }

    modifier notStarted() {
        require(!started, "SenioragePool: already initialized");
        _;
    }

    /* ========== GOVERNANCE ========== */

    function initialize(
        IERC20 _weth,
        IERC20 _lock_token,
        NetherOracle _netherOracle
    ) public notStarted {
        weth = _weth;
        lock_token = _lock_token;
        netherOracle = _netherOracle;

        SenioragePoolSnapshot memory genesisSnapshot = SenioragePoolSnapshot({
            time: block.number,
            rewardReceived: 0,
            rewardPerShare: 0
        });
        senioragePoolHistory.push(genesisSnapshot);

        started = true;
        operator = msg.sender;
        super._setTokenAddress(address(_lock_token));
        emit Initialized(msg.sender, block.number);
    }

    function setOperator(address _operator) external onlyOperator {
        operator = _operator;
    }

    /* ========== VIEW FUNCTIONS ========== */

    // =========== Snapshot getters

    function latestSnapshotIndex() public view returns (uint256) {
        return senioragePoolHistory.length.sub(1);
    }

    function getLatestSnapshot()
        internal
        view
        returns (SenioragePoolSnapshot memory)
    {
        return senioragePoolHistory[latestSnapshotIndex()];
    }

    function getLastSnapshotIndexOf(uint256 tokenId)
        public
        view
        returns (uint256)
    {
        return seniors[tokenId].lastSnapshotIndex;
    }

    function getLastSnapshotOf(uint256 tokenId)
        internal
        view
        returns (SenioragePoolSnapshot memory)
    {
        return senioragePoolHistory[getLastSnapshotIndexOf(tokenId)];
    }

    function epoch() public view returns (uint256) {
        return netherOracle.getCurrentEpoch();
    }

    function nextEpochPoint() external view returns (uint256) {
        return netherOracle.nextEpochPoint();
    }


    // =========== Seniorage getters

    function rewardPerShare() public view returns (uint256) {
        return getLatestSnapshot().rewardPerShare;
    }

    function earned(uint256 tokenId) public view returns (uint256) {
        uint256 latestRPS = getLatestSnapshot().rewardPerShare;
        uint256 storedRPS = getLastSnapshotOf(tokenId).rewardPerShare;

        return
            balanceOf(tokenId).mul(latestRPS.sub(storedRPS)).div(1e18).add(
                seniors[tokenId].rewardEarned
            );
    }

    /* ========== MUTATIVE FUNCTIONS ========== */

    function stake(
        uint256 amount,
        uint256 _lock_epochs,
        address _to
    ) public onlyOneBlock {
        require(amount > 0); // dev: need non-zero value
        uint256 unlock_epoch = epoch() + _lock_epochs;
        uint256 tokenId = _create_lock(amount, unlock_epoch, _to);
        super.stake(amount * (_lock_epochs + 1), tokenId);
        emit Staked(msg.sender, amount);
    }

    function withdraw(uint256 tokenId)
        public
        onlyOneBlock
        seniorageExists(tokenId)
        updateReward(tokenId)
    {
        claimReward(tokenId);
        require(super.withdraw(tokenId, epoch()));
        super.withdrawShare(tokenId);
        emit Withdrawn(msg.sender, tokenId);
    }

    function exit(uint256 tokenId) external {
        withdraw(balanceOf(tokenId));
    }

    function claimReward(uint256 tokenId) public updateReward(tokenId) {
        require(super.ownerOf(tokenId) == msg.sender);

        // do some fancy calculations here

        uint256 reward = seniors[tokenId].rewardEarned;
        if (reward > 0) {
            seniors[tokenId].epochTimerStart = epoch(); // reset timer
            seniors[tokenId].rewardEarned = 0;
            weth.safeTransfer(msg.sender, reward);
            emit RewardPaid(msg.sender, reward);
        }
    }

    function allocateSeigniorage(uint256 amount)
        external
        onlyOperator
    {
        require(amount > 0, "SenioragePool: Cannot allocate 0");
        require(
            totalSupply() > 0,
            "SenioragePool: Cannot allocate when totalSupply is 0"
        );

        // Create & add new snapshot
        uint256 prevRPS = getLatestSnapshot().rewardPerShare;
        uint256 nextRPS = prevRPS.add(amount.mul(1e18).div(totalSupply()));

        SenioragePoolSnapshot memory newSnapshot = SenioragePoolSnapshot({
            time: block.number,
            rewardReceived: amount,
            rewardPerShare: nextRPS
        });
        senioragePoolHistory.push(newSnapshot);

        weth.safeTransferFrom(msg.sender, address(this), amount);
        emit RewardAdded(msg.sender, amount);
    }

    function governanceRecoverUnsupported(
        IERC20 _token,
        uint256 _amount,
        address _to
    ) external onlyOperator {
        // do not allow to drain core tokens
        require(address(_token) != address(weth), "weth");
        require(address(_token) != address(lock_token), "nether");
        _token.safeTransfer(_to, _amount);
    }
}

