pragma solidity ^0.8.17;

import "@openzeppelin/contracts/access/AccessControlEnumerable.sol";
import "@openzeppelin/contracts/access/Ownable2Step.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableMap.sol";

contract Sponsorship is AccessControlEnumerable, Initializable, Ownable2Step, Pausable {
    using EnumerableMap for EnumerableMap.AddressToUintMap;

    struct Payment {
        address payer;
        address token;
        uint256 amount;
        uint256 round;
        string message;
    }

    bytes32 public constant WITHDRAWER_ROLE = keccak256("WITHDRAWER_ROLE");

    /**
     * @dev Name of the project or owner.
     */
    string public name;

    /**
     * @dev Used to store customized key-value pairs.
     */
    mapping(string => string) public metadata;

    /**
     * @dev The first round of sponsorships will begin 30 days after the contract deployment time.
     *
     * It is set to a immutable here to support both create2 development,
     * and prevent the value of this variable from being changed through contract upgrades.
     */
    uint public immutable RELEASE = block.timestamp + DURATION;

    /**
     * @dev Each round of sponsorships is 30 days apart.
     *
     * It is set to a constant here to support both create2 development,
     * and prevent the value of this variable from being changed through contract upgrades.
     */
    uint public constant DURATION = 60 * 24 * 30;

    // Used to store the mapping of sponsor and payment method ids.
    EnumerableMap.AddressToUintMap private _sponsors;

    uint256 public totalPayments;
    mapping(uint256 => Payment) private _payments;

    event Created(string name, address indexed owner, uint release, uint duraion);
    event Subscribed(address indexed sponsor, uint256 indexed paymentID, address token, uint256 amount, uint256 indexed round, string message);
    event Unsubscribed(address indexed sponsor, uint256 indexed paymentID, address token, uint256 amount, uint256 indexed round, string message);
    event Withdrawal(address indexed sponsor, address indexed receiver, address token, uint amount, uint256 indexed round);

    constructor(address owner_) {
        require(owner_ != address(0), "first owner cannot be a generic null address");

        transferOwnership(owner_);

        _pause();
    }

    function initialize(string memory name_) initializer onlyOwner public {
        name = name_;

        _unpause();

        emit Created(name, owner(), RELEASE, DURATION);
    }

    /**
     * @dev Get the current current round.
     * If it is round 0, it means that the first round has yet to start.
     */
    function round() public view returns (uint256) {
        return (block.timestamp - RELEASE) / DURATION;
    }

    function sponsor(address sponsor_) public view returns (uint256 _paymentID, Payment memory _payment) {
        bool exist;

        (exist, _paymentID) = EnumerableMap.tryGet(_sponsors, sponsor_);

        if (!exist) {
            return (0, _payment);
        }

        return (_paymentID, _payments[_paymentID]);
    }

    /**
     * @dev Join this cyclical sponsorship.
     */
    function subscribe(address token, uint256 amount, string memory message) public whenNotPaused {
        IERC20 _token = IERC20(token);

        // If the number of approved tokens is less than the planned sponsorship amount,
        // it may cause subsequent withdrawals to fail.
        require(_token.allowance(msg.sender, address(this)) >= amount, "not approved enough amount of tokens to this contract");

        (bool exist, uint _paymentID) = EnumerableMap.tryGet(_sponsors, msg.sender);

        Payment storage _payment;

        if (exist) {
            _payment = _payments[_paymentID];
        } else {
            // If this sponsor is new, register him.
            totalPayments += 1;
            _payment = _payments[totalPayments];
            _payment.payer = msg.sender;
            _payment.round = round();
        }

        _payment.token = token;
        _payment.amount = amount;
        _payment.message = message;

        emit Subscribed(_payment.payer, _paymentID, _payment.token, _payment.amount, _payment.round, _payment.message);
    }

    function unsubscribe(string memory message) public returns (bool) {
        return _unsubscribe(msg.sender, message);
    }

    function unsubscribe(address sponsor_, string memory message) public onlyOwner returns (bool) {
        return _unsubscribe(sponsor_, message);
    }

    function _unsubscribe(address sponsor_, string memory message) private returns (bool) {
        uint256 _paymentID = EnumerableMap.get(_sponsors, sponsor_);
        Payment storage _payment = _payments[_paymentID];
        bool unsubscribed = EnumerableMap.remove(_sponsors, sponsor_);

        if (unsubscribed) {
            emit Unsubscribed(_payment.payer, _paymentID, _payment.token, _payment.amount, _payment.round, message);
        }

        return unsubscribed;
    }

    /**
     * @dev A caller needs to specify the block height when calling the function.
     * Otherwise, payments will not guarantee the withdrawal order.
     */
    function withdraw(uint256 offset, uint limit) public whenNotPaused onlyRole(WITHDRAWER_ROLE) {
        uint256 _boundary = offset + limit;
        uint256 _round = round();
        address _receiver = owner();
        uint256 _length = EnumerableMap.length(_sponsors);

        address _sponsor;
        uint256 _paymentID;

        IERC20 _token;
        Payment storage _payment;

        for (uint256 i = offset; i < _boundary && i < _length; i++) {
            (_sponsor, _paymentID) = EnumerableMap.at(_sponsors, i);

            _payment = _payments[_paymentID];

            // Avoid withdrawal of the same sponsor's tokens in the same sponsorship round.
            if (_payment.round >= _round) continue;

            _token = IERC20(_payment.token);

            // Avoid failed transfer due to insufficient sponsor approved amount or poor balance.
            if (_token.allowance(_payment.payer, address(this)) < _payment.amount) continue;
            if (_token.balanceOf(_payment.payer) < _payment.amount) continue;

            // Send a token transfer for withdrawal.
            if (_token.transferFrom(_payment.payer, _receiver, _payment.amount)) {
                _payment.round = _round;

                emit Withdrawal(_payment.payer, _receiver, _payment.token, _payment.amount, _payment.round);
            }
        }
    }

    function pause() public onlyOwner {
        _pause();
    }

    function unpause() public onlyOwner {
        _unpause();
    }
}