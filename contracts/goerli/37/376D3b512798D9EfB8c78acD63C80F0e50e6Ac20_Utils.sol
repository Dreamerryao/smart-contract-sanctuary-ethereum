        public
        pure
        returns (uint256)
    {
        //require(_unitUrano > 0, "Too few Urano tokens");
        require(_origUrano > 0, "Too few tokens");
        return _origUrano * 10**_scale;
    }

    function unitToAtto(uint256 _unitUrano) public pure returns (uint256) {
        require(
            _unitUrano <
