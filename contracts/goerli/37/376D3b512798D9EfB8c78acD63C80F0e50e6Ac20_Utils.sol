        // //20.301 / 10.000 = 2
        // //2 * 10.000 = 20.000
        // uint256 integerPart = (_origUrano / _scale)*_scale;
        //20.301 % 10.000 = 301
        uint256 decimalPart = _origUrano % 10**_scale;
        require(decimalPart == 0, "cancellation risk in approximation");
        return _origUrano / 10**_scale;
    }

