pragma solidity 0.8.16;
pragma abicoder v2; // required to accept structs as function parameters

import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "@openzeppelin/contracts/utils/cryptography/draft-EIP712.sol";
import "@openzeppelin/contracts-upgradeable/utils/math/SafeMathUpgradeable.sol";
import "@chainlink/contracts/src/v0.8/ConfirmedOwner.sol";
import "@chainlink/contracts/src/v0.8/VRFV2WrapperConsumerBase.sol";
import "@openzeppelin/contracts/security/Pausable.sol";

contract Lottery is EIP712, ConfirmedOwner, VRFV2WrapperConsumerBase, Pausable {
    using SafeMathUpgradeable for uint256;

    event RequestSent(
        uint256 firstRequestId,
        uint256 secondRequestId,
        uint32 numWords
    );
    event RequestFulfilled(
        uint256 requestId,
        uint256[] randomWords,
        uint256 payment
    );

    struct RequestStatus {
        uint256 paid; // amount paid in link
        bool fulfilled; // whether the request has been successfully fulfilled
        uint256[] randomWords;
    }

    struct LastRequest {
        uint256 firstRequestId;
        uint256 secondRequestId;
    }

    struct DailyBonus {
        uint256 ticket_number;
        address buyer;
        bytes signature;
    }

    // Configuration for Woonkly-Signing
    string private constant SIGNING_DOMAIN = "Woonkly-Domain";
    string private constant SIGNATURE_VERSION = "1";

    mapping(uint256 => RequestStatus) public s_requests; /* requestId --> requestStatus */
    mapping(uint256 => mapping(uint256 => uint256)) public _winners;
    mapping(uint256 => mapping(uint256 => address)) public _winnersAddress;
    mapping(uint256 => mapping(address => bool)) public _winnersClaimed;

    uint32 public totalParticipants;
    bool lotteryCompleted = false;
    LastRequest public lastRequest;

    // past requests Id.
    uint256[] public requestIds;

    // Chainlink parameters
    uint32 callbackGasLimit = 2000000;
    uint16 requestConfirmations = 3;
    uint32 numWords;
    // Chainlink configuration
    address linkAddress;
    address wrapperAddress;

    event SetWinnersPerRequest(uint32 winners);
    event NewWinner(address winner, uint256 reqId);
    event NewWinners(address[] winner, uint256 reqId);
    event WinnerClaimedPrice(address winner, uint256 reqId);

    constructor(
        address _linkAddress,
        address _wrapperAddress,
        uint32 _totalWinners
    )
        EIP712(SIGNING_DOMAIN, SIGNATURE_VERSION)
        VRFV2WrapperConsumerBase(_linkAddress, _wrapperAddress)
        ConfirmedOwner(msg.sender)
    {
        require(
            _totalWinners <= 10,
            "The number of words exceed the maximun allowed"
        );
        linkAddress = _linkAddress;
        wrapperAddress = _wrapperAddress;
        numWords = _totalWinners;
    }

    function setNumOfWinners(uint32 _totalWinners) public onlyOwner {
        require(_totalWinners <= 10);
        numWords = _totalWinners;
        emit SetWinnersPerRequest(_totalWinners);
    }

    function getNumberOfWinners() external view returns (uint256) {
        return numWords;
    }

    function getChainID() external view returns (uint256) {
        uint256 id;
        assembly {
            id := chainid()
        }
        return id;
    }

    function setWinner(
        address _winner,
        uint256 _requestId,
        uint256 _ticket_number
    ) public onlyOwner {
        _winnersAddress[_requestId][_ticket_number] = _winner;
        _winnersClaimed[_requestId][_winner] = false;
        emit NewWinner(_winner, _requestId);
    }

    function setWinnersBatch(
        address[] memory _winnersForLottery,
        uint256 _requestId,
        uint256[] memory _ticket_number
    ) public onlyOwner {
        require(
            lotteryCompleted == true,
            "The lottery has not yet been carried out"
        );
        for (uint256 i; i < _ticket_number.length; ++i) {
            uint256 ticketWinner = _ticket_number[i];
            address addressWinnerForTicket = _winnersForLottery[i];
            require(
                _winners[_requestId][i] == ticketWinner,
                "The ticket you want to assign to a winner does not match"
            );
            _winnersAddress[_requestId][ticketWinner] = addressWinnerForTicket;
            _winnersClaimed[_requestId][addressWinnerForTicket] = false;
        }
        emit NewWinners(_winnersForLottery, _requestId);
    }

    function getTotalParticipants() public view returns (uint256) {
        return totalParticipants;
    }

    function getNumberWinners(uint256 _requestId, uint256 winner)
        public
        view
        returns (uint256)
    {
        return _winners[_requestId][winner];
    }

    function isWinner(uint256 _requestId, DailyBonus calldata ticket)
        public
        view
        returns (bool)
    {
        return
            _verify(ticket) ==
            _winnersAddress[_requestId][ticket.ticket_number];
    }

    function getWinner(uint256 _requestId, DailyBonus calldata ticket)
        public
        view
        returns (address)
    {
        require(
            _winnersAddress[_requestId][ticket.ticket_number] ==
                _verify(ticket),
            "This ticket is not a winner"
        );
        return _winnersAddress[_requestId][ticket.ticket_number];
    }

    function _hash(DailyBonus calldata voucher)
        internal
        view
        returns (bytes32)
    {
        return
            _hashTypedDataV4(
                keccak256(
                    abi.encode(
                        keccak256(
                            "DailyBonus(uint256 ticket_number,address buyer)"
                        ),
                        voucher.ticket_number,
                        voucher.buyer
                    )
                )
            );
    }

    function _verify(DailyBonus calldata voucher)
        public
        view
        returns (address)
    {
        bytes32 digest = _hash(voucher);
        return ECDSA.recover(digest, bytes(voucher.signature));
    }

    function fulfillRandomWords(
        uint256 _requestId,
        uint256[] memory _randomWords
    ) internal override {
        require(s_requests[_requestId].paid > 0, "request not found");
        s_requests[_requestId].fulfilled = true;
        s_requests[_requestId].randomWords = _randomWords;
        for (uint256 i = 0; i < numWords; i++) {
            uint256 winningTicket = (_randomWords[i] % totalParticipants) + 1; // Gives a number >=1 and <= total tickets
            _winners[_requestId][i] = winningTicket;
        }
        emit RequestFulfilled(
            _requestId,
            _randomWords,
            s_requests[_requestId].paid
        );
    }

    function claimPrice(DailyBonus calldata ticket, uint256 _requestId)
        public
        whenNotPaused
    {
        require(
            lotteryCompleted == true,
            "The lottery has not yet been carried out"
        );
        require(
            msg.sender == _verify(ticket) && isWinner(_requestId, ticket),
            "Wrong signature."
        );
        require(
            _winnersClaimed[_requestId][msg.sender] == false,
            "Winner already claimed the price"
        );
        _winnersClaimed[_requestId][msg.sender] = true;
        emit WinnerClaimedPrice(ticket.buyer, _requestId);
    }

    function getRandomWinners(uint32 _totalParticipants)
        external
        onlyOwner
        returns (uint256 firstRequestId, uint256 secondRequestId)
    {
        require(
            LINK.balanceOf(address(this)) >= 2,
            "Not enough LINK for all requests - fill contract with faucet"
        );
        require(
            lotteryCompleted == false,
            "The lottery draw has already taken place"
        );
        firstRequestId = requestRandomness(
            callbackGasLimit,
            requestConfirmations,
            numWords
        );
        s_requests[firstRequestId] = RequestStatus({
            paid: VRF_V2_WRAPPER.calculateRequestPrice(callbackGasLimit),
            randomWords: new uint256[](0),
            fulfilled: false
        });
        requestIds.push(firstRequestId);
        lastRequest.firstRequestId = firstRequestId;
        secondRequestId = requestRandomness(
            callbackGasLimit,
            requestConfirmations,
            numWords
        );
        s_requests[secondRequestId] = RequestStatus({
            paid: VRF_V2_WRAPPER.calculateRequestPrice(callbackGasLimit),
            randomWords: new uint256[](0),
            fulfilled: false
        });
        requestIds.push(secondRequestId);
        lastRequest.secondRequestId = secondRequestId;
        lotteryCompleted = true;
        totalParticipants = _totalParticipants;
        emit RequestSent(firstRequestId, secondRequestId, numWords);
        return (firstRequestId, secondRequestId);
    }

    function getRequestStatus(uint256 _requestId)
        external
        view
        returns (
            uint256 paid,
            bool fulfilled,
            uint256[] memory randomWords
        )
    {
        require(s_requests[_requestId].paid > 0, "request not found");
        RequestStatus memory request = s_requests[_requestId];
        return (request.paid, request.fulfilled, request.randomWords);
    }

    function withdrawLink() public onlyOwner {
        LinkTokenInterface link = LinkTokenInterface(linkAddress);
        require(
            link.transfer(msg.sender, link.balanceOf(address(this))),
            "Unable to transfer"
        );
    }
}

