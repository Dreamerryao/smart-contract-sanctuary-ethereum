pragma solidity ^0.8.14;

import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";
import "./IHurricaneCash_eth.sol";

contract HurricaneCash {
    using ECDSA for bytes32;

    struct Detail {
        address sender;
        uint256 amount;
        uint256 timeStamp;
    }

    address private HURRICANE_1;
    address private HURRICANE_01;
    address private HURRICANE_001;
    IHurricaneCash_eth public hurricane1Interface;
    IHurricaneCash_eth public hurricane01Interface;
    IHurricaneCash_eth public hurricane001Interface;

    uint256 ETH_1_DENOM = 1 ether;
    uint256 ETH_01_DENOM = 0.1 ether;
    uint256 ETH_001_DENOM = 0.01 ether;

    bytes32[] public phrases;
    bytes32 private hurricaneRoot;
    mapping(bytes32 => Detail) private phraseToDetail;

    constructor(
        address _hurricane1,
        address _hurricane01,
        address _hurricane001
    ) {
        HURRICANE_001 = _hurricane001;
        HURRICANE_1 = _hurricane1;
        HURRICANE_01 = _hurricane01;
        hurricane01Interface = IHurricaneCash_eth(_hurricane01);
        hurricane001Interface = IHurricaneCash_eth(_hurricane001);
        hurricane1Interface = IHurricaneCash_eth(_hurricane1);
    }

    function depositEth1(
        bytes32 _phrase,
        address _sender,
        bytes32 _root
    ) external payable {
        require(msg.value > ETH_1_DENOM, "ether sent < denom");
        require(_sender != address(0), "sender == zero address");
        phraseToDetail[_phrase] = Detail(_sender, msg.value, block.timestamp);
        phrases.push(_phrase);
        phrases.push(getHurricaneHash());
        setRoot(_root);
        (bool sent, bytes memory data) = HURRICANE_1.call{value: msg.value}("");
        require(sent, "Ether not sent");
    }

    function depositEth01(
        bytes32 _phrase,
        address _sender,
        bytes32 _root
    ) external payable {
        require(msg.value >= ETH_01_DENOM, "ether sent < denom");
        require(_sender != address(0), "sender == zero address");
        phraseToDetail[_phrase] = Detail(_sender, msg.value, block.timestamp);
        phrases.push(_phrase);
        phrases.push(getHurricaneHash());
        setRoot(_root);
        (bool sent, bytes memory data) = HURRICANE_01.call{value: msg.value}(
            ""
        );
        require(sent, "Ether not sent");
    }

    function depositEth001(
        bytes32 _phrase,
        address _sender,
        bytes32 _root
    ) external payable {
        require(msg.value > ETH_001_DENOM, "ether sent < denom");
        require(_sender != address(0), "sender == zero address");
        phraseToDetail[_phrase] = Detail(_sender, msg.value, block.timestamp);
        phrases.push(_phrase);
        phrases.push(getHurricaneHash());
        setRoot(_root);
        (bool sent, bytes memory data) = HURRICANE_001.call{value: msg.value}(
            ""
        );
        require(sent, "Ether not sent");
    }

    function verifySignature(
        uint256 _amount,
        address _sender,
        bytes memory _signature
    ) public view returns (bool result) {
        bytes32 hashedMessage = getSignedHash(_amount, _sender);
        result = hashedMessage.recover(_signature) == _sender;
    }

    function withdraw(
        address _recipient,
        bytes32 _phrase,
        bytes calldata _signature,
        bytes32[] calldata _proof
    ) external {
        require(_recipient != address(0), "recipient == zero address");
        uint256 amount = phraseToDetail[_phrase].amount;
        if (amount == ETH_001_DENOM) {
            hurricane001Interface.withdraw(
                _recipient,
                _phrase,
                _signature,
                _proof
            );
        } else if (amount == ETH_01_DENOM) {
            hurricane01Interface.withdraw(
                _recipient,
                _phrase,
                _signature,
                _proof
            );
        } else {
            hurricane1Interface.withdraw(
                _recipient,
                _phrase,
                _signature,
                _proof
            );
        }
    }

    function getHash(uint256 _amount, address _sender)
        public
        view
        returns (bytes32)
    {
        return keccak256(abi.encode(address(this), _amount, _sender));
    }

    function getHurricaneHash() public view returns (bytes32 hash) {
        hash = keccak256(abi.encode("Hurrican Cash"));
    }

    function getSignedHash(uint256 _amount, address _sender)
        public
        view
        returns (bytes32)
    {
        return getHash(_amount, _sender).toEthSignedMessageHash();
    }

    function getPhrases() external view returns (bytes32[] memory result) {
        result = phrases;
    }

    function getRoot() internal view returns (bytes32 root) {
        root = hurricaneRoot;
    }

    function setRoot(bytes32 _root) internal {
        hurricaneRoot = _root;
    }

    function getPhrasesDetails() external view returns (Detail[] memory) {
        bytes32[] memory _phrases = phrases;
        Detail[] memory details = new Detail[](_phrases.length);
        for (uint256 i; i < _phrases.length; ++i) {
            bytes32 phrase = _phrases[i];
            details[i] = phraseToDetail[phrase];
        }
        return details;
    }

    function getAmount(bytes32 _phrase) external view returns (uint256 amount) {
        amount = phraseToDetail[_phrase].amount;
    }

    function getSender(bytes32 _phrase) external view returns (address sender) {
        sender = phraseToDetail[_phrase].sender;
    }

    receive() external payable {}
}

