import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";
import "@opengsn/contracts/src/ERC2771Recipient.sol";
import "./IHurricaneCash.sol";

contract HurricaneCash_eth is ERC2771Recipient {
    using ECDSA for bytes32;
    IHurricaneCash public hurricaneCashInterface;

    struct Detail {
        address sender;
        uint256 amount;
        uint256 timeStamp;
    }

    constructor(address _forwarder) {
        _setTrustedForwarder(_forwarder);
    }

    function setInterface(address _hurricaneCash) external {
        hurricaneCashInterface = IHurricaneCash(_hurricaneCash);
    }

    function verifySignature(
        uint256 _amount,
        address _sender,
        bytes memory _signature
    ) public view returns (bool result) {
        bytes32 hashedMessage = getSignedHash(_amount, _sender);
        result = hashedMessage.recover(_signature) == _sender;
    }

    function withdraw(
        address _recipient,
        bytes32 _phrase,
        bytes calldata _signature,
        bytes32[] calldata _proof
    ) external {
        require(_recipient != address(0), "recipient == zero address");
        uint256 amount = hurricaneCashInterface.getAmount(_phrase);
        address sender = hurricaneCashInterface.getSender(_phrase);
        bool resultSignature = verifySignature(amount, sender, _signature);
        bool resultPhrase = verifyPhrase(_phrase, _proof);
        require(resultSignature, "Signature denied");
        require(resultPhrase, "Phrase denied");
        (bool sent, bytes memory data) = _recipient.call{value: amount}("");
        require(sent, "Ether not sent");
    }

    function getHash(uint256 _amount, address _sender)
        public
        view
        returns (bytes32)
    {
        return keccak256(abi.encode(address(this), _amount, _sender));
    }

    function getHurricaneHash() public view returns (bytes32 hash) {
        hash = keccak256(abi.encode("Hurricane Cash"));
    }

    function getSignedHash(uint256 _amount, address _sender)
        public
        view
        returns (bytes32)
    {
        return getHash(_amount, _sender).toEthSignedMessageHash();
    }

    function verifyPhrase(bytes32 _phrase, bytes32[] calldata _proof)
        public
        view
        returns (bool result)
    {
        bytes32 hurricaneRoot = hurricaneCashInterface.getRoot();
        result = MerkleProof.verify(_proof, hurricaneRoot, _phrase);
    }

    receive() external payable {}
}

