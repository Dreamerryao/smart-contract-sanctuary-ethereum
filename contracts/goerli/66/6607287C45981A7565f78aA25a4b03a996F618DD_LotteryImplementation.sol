    ChainLinkRequestStatus memory request = VRF_requestStatus(requestId);
    //Choose the winner
    uint256 playerCount = LotteryStorage.numberOfPlayers(lotteryId);
    if (playerCount == 0) { revert NoParticipants(lotteryId); }
    uint256 index = request.randomWords[0] % playerCount;
    (address winner,) = _getPairByIndex(lotteryId, index);
    uint256 prize = AUSDT().balanceOf(address(_lotteryTreasury(lotteryId))) - _lotteryTotal(lotteryId);
    uint256 prizeShare = (prize / 100);

    RewardDistribution memory distribution = _lotteryDistribution(lotteryId);

    LotteryStorage.layout().balance[winner] += prizeShare * distribution.toWinner;
    LotteryStorage.layout().balance[_lotteryCreator(lotteryId)] += prizeShare * distribution.toCreator;
    LotteryStorage.layout().balance[_lotteryOrganizer(lotteryId)] += prizeShare * distribution.toOrganizer;
    LotteryStorage.layout().balance[_lotteryOther(lotteryId)] += prizeShare * distribution.toOther;

    _lotteryTreasury(lotteryId).close();
    emit LotteryFinished(lotteryId, msg.sender, winner);
  }

