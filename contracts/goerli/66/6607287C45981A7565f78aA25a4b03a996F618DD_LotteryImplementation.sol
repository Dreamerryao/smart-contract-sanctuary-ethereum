    LotteryStorage.layout().lotteryOpen[lotteryId] = false;
    uint256 requestId = requestChainLinkRandomness();
    LotteryStorage.layout().lotteryIdFromRequest[requestId] = lotteryId;
    emit VRFRequestSent(lotteryId, requestId);
  }

