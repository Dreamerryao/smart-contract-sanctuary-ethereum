    uint256 balance = _balance(msg.sender) - _stake(msg.sender);
    if(amount > balance) { revert WithdrawalExceedsBalance(msg.sender, amount, balance); }
    AAVE().withdraw(address(USDT()), amount, msg.sender);
  }

