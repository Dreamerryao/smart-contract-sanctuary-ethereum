    EnumerableMap.UintToUintMap storage time = _lotteryTime();
    uint[] memory lotteriesToFinish = new uint[](time.length());
    uint numOfLotteriesToFinish;
    for(uint i; i < time.length(); i++) {
      (uint lotteryId, uint endTime) = time.at(i);
      if (
        endTime >= block.timestamp && 
        (
          _lotteryOpen(lotteryId) ||
          VRF_requestStatus(_requestIdFromLotteryId(lotteryId)).fulfilled
        )
      )
      { 
        lotteriesToFinish[i] = lotteryId;
