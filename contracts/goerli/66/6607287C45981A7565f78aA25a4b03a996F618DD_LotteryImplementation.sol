    LINK().transferAndCall(
      address(VRFv2_Wrapper()),
      VRFv2_Wrapper().calculateRequestPrice(VRF_callbackGasLimit()),
      abi.encode(VRF_callbackGasLimit(), VRF_requestConfirmations(), VRF_numWords())
    );
    requestId = VRFv2_Wrapper().lastRequestId();
    ChainLinkRandomnessStorage.layout().requestStatus[requestId] = ChainLinkRequestStatus({
      paid: VRFv2_Wrapper().calculateRequestPrice(VRF_callbackGasLimit()),
      fulfilled: false,
      randomWords: new uint256[](0)
    });
  }

