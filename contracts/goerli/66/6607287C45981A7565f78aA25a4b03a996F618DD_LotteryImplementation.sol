{
  using EnumerableMap for EnumerableMap.UintToUintMap;

  function createLottery(
    address nft,
    address creator,
    address organizer,
    address other,
    uint time,
    RewardDistribution memory distribution
  )
  public
  ifIsShareDistributionCorrect(distribution)
  {
    uint lotteryId = _newLotteryId();
    LotteryStorage.layout().newLotteryId++;

    LotteryStorage.layout().lotteryOpen[lotteryId] = true;
    LotteryStorage.layout().nft[lotteryId] = nft;
    LotteryStorage.layout().creator[lotteryId] = creator;
    LotteryStorage.layout().organizer[lotteryId] = organizer;
    LotteryStorage.layout().other[lotteryId] = other;
    LotteryStorage.layout().distribution[lotteryId] = distribution;
    LotteryStorage.layout().treasury[lotteryId] = 
      address(new Treasury(address(AUSDT()), address(AAVE()), address(USDT())));
    LotteryStorage.setLotteryTime(lotteryId, block.timestamp + time);

    emit LotteryCreated(lotteryId, msg.sender, nft);
  }

  function placeBet(uint lotteryId, uint256 amount)
    public
    ifIsLotteryOpen(lotteryId)
    ifIsNFTHolder(lotteryId)
  {
    //Check if lottery-address pair exists
    (bool exists, uint256 bet) = _betOf(lotteryId, msg.sender);
    exists
      //Add to it if it is
      ? LotteryStorage.placeBet(lotteryId, msg.sender, bet + amount)
      //Create it if it isn't
      : LotteryStorage.placeBet(lotteryId, msg.sender, amount);
    LotteryStorage.layout().total[lotteryId] += amount;

    //If balance on contract > 0 => draw from it first
    uint256 balance = _balance(msg.sender) - _stake(msg.sender);
    if (balance >= amount) {
      //If balance > amount => simply transfer ATokens
      AUSDT().transfer(address(_lotteryTreasury(lotteryId)), amount);
      LotteryStorage.layout().stake[msg.sender] += amount;
    } else {
      //Transfer a ATokens & add USDT on top if balance < amount
      if (balance > 0) {
        AUSDT().transfer(address(_lotteryTreasury(lotteryId)), balance);
      }
      LotteryStorage.layout().balance[msg.sender] += amount - balance;
      LotteryStorage.layout().stake[msg.sender] += amount;
      USDT().transferFrom(msg.sender, address(this), amount - balance);
      USDT().approve(address(AAVE()), amount - balance);
      AAVE().supply(address(USDT()), amount - balance, address(_lotteryTreasury(lotteryId)), 0);
    }
    emit BetPlaced(lotteryId, msg.sender, amount);
  }

  function withdrawBet(uint lotteryId, uint256 amount)
    public
    ifIsLotteryOpen(lotteryId)
  {
    (bool exists, uint256 bet) = _betOf(lotteryId, msg.sender);
    if (!exists) { revert NoBet(lotteryId, msg.sender); }
    if (amount > bet) { revert WithdrawalExeedsBet(lotteryId, msg.sender, bet, amount); }
    if (amount == bet) { LotteryStorage.removeBet(lotteryId, msg.sender); }
    if (amount < bet) { LotteryStorage.placeBet(lotteryId, msg.sender, bet - amount); }
    LotteryStorage.layout().total[lotteryId] -= amount;
    LotteryStorage.layout().balance[msg.sender] -= amount;
    LotteryStorage.layout().stake[msg.sender] -= amount;
    _lotteryTreasury(lotteryId).withdraw(amount, msg.sender);
    emit BetWithdrawn(lotteryId, msg.sender, amount);
  }
  
