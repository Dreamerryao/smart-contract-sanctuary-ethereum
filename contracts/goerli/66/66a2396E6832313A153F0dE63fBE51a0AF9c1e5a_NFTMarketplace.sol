contract NFTMarketplace {
    using SafeMath for uint256;

    struct Sale {
        address seller;
        address nftContract;
        uint256 tokenId;
        uint256 price;
        bool active;
    }

    mapping(uint256 => Sale) private _sales;

    IERC20 private _token;

    constructor(IERC20 token) {
        _token = token;
    }

    function createSale(address nftContract, uint256 tokenId, uint256 price) public {
        require(IERC721(nftContract).ownerOf(tokenId) == msg.sender, "NFTMarketplace: Only the owner can create a sale");
        require(price > 0, "NFTMarketplace: Price must be greater than zero");

        IERC721(nftContract).transferFrom(msg.sender, address(this), tokenId);

        _sales[tokenId] = Sale({
            seller: msg.sender,
            nftContract: nftContract,
            tokenId: tokenId,
            price: price,
            active: true
        });

        emit SaleCreated(msg.sender, nftContract, tokenId, price);
    }

    function cancelSale(uint256 tokenId) public {
        Sale storage sale = _sales[tokenId];
        require(sale.active, "NFTMarketplace: Sale is not active");
        require(sale.seller == msg.sender, "NFTMarketplace: Only the seller can cancel the sale");

        IERC721(sale.nftContract).transferFrom(address(this), msg.sender, tokenId);

        delete _sales[tokenId];

        emit SaleCancelled(msg.sender, sale.nftContract, tokenId);
    }

    function buy(uint256 tokenId) public {
        Sale storage sale = _sales[tokenId];
        require(sale.active, "NFTMarketplace: Sale is not active");

        uint256 price = sale.price;
        address seller = sale.seller;
        address buyer = msg.sender;

        _token.transferFrom(buyer, seller, price);
        IERC721(sale.nftContract).transferFrom(address(this), buyer, tokenId);

        delete _sales[tokenId];

        emit SaleCompleted(seller, buyer, sale.nftContract, tokenId, price);
    }

    function getSale(uint256 tokenId) public view returns (address, address, uint256, uint256, bool) {
        Sale storage sale = _sales[tokenId];
        return (sale.seller, sale.nftContract, sale.tokenId, sale.price, sale.active);
    }

    event SaleCreated(address seller, address nftContract, uint256 tokenId, uint256 price);
    event SaleCancelled(address seller, address nftContract, uint256 tokenId);
    event SaleCompleted(address seller, address buyer, address nftContract, uint256 tokenId, uint256 price);
}