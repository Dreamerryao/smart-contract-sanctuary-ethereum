pragma solidity >=0.8.9;

import "../utils/cryptography/ECDSA.sol";

contract BaseWallet {
    using ECDSA for bytes32;

    uint256 public nonce = 0;
    bool public offchainGuardianEnabled = true;

    // The guardian value should be scoped to a single contract
    address[] public signers;
    address public offchainGuardian;

    constructor(address[] memory _signers, address _offchainGuardian) {
        require(
            _offchainGuardian != address(0),
            "invalid offchain guardian address"
        );
        for (uint256 i = 0; i < _signers.length; i++) {
            require(_signers[i] != address(0), "invalid signer address");
        }

        signers = _signers;
        offchainGuardian = _offchainGuardian;
    }

    function exec(
        address _to,
        uint256 _value,
        bytes calldata _data,
        uint256 _nonce,
        bytes memory _sig
    ) external returns (bool) {
        if (offchainGuardianEnabled) {
            require(
                msg.sender == offchainGuardian,
                "missing offchain guardian approval"
            );
        }

        require(nonce == _nonce, "invalid nonce");
        bytes32 _hash = keccak256(abi.encodePacked(_to, _value, _data, nonce));
        nonce++;
        require(!validateSig(_hash, _sig), "invalid signature");

        (bool success, ) = _to.call{value: _value}(_data);
        return success;
    }

    function setOffchainGuardian(address _offchainGuardian)
        external
        onlyOffchainGuardian
    {
        offchainGuardian = _offchainGuardian;
    }

    function setOffchainGuardianEnabled(bool _mode) external onlySigner {
        offchainGuardianEnabled = _mode;
    }

    function validateSig(bytes32 _hash, bytes memory _signature)
        public
        view
        returns (bool)
    {
        address signer = _hash.recover(_signature);
        return isSigner(signer);
    }

    function isSigner(address _a) public view returns (bool) {
        address[] memory _signers = signers;

        for (uint256 i = 0; i < _signers.length; i++) {
            if (_signers[i] == _a) {
                return true;
            }
        }

        return false;
    }

    modifier onlyOffchainGuardian() {
        require(msg.sender == offchainGuardian, "invalid offchain guardian");
        _;
    }

    modifier onlySigner() {
        require(isSigner(msg.sender), "invalid signer");
        _;
    }
}

