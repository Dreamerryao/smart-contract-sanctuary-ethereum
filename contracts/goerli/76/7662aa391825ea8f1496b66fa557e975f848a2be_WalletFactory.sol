pragma solidity >=0.8.9;

import "../utils/Create2.sol";
import "./IWalletFactory.sol";

contract WalletFactory is IWalletFactory {
    event WalletCreated(
        address _walletAddress,
        address[] _signers,
        address _offchainGuardian
    );

    function createWallet(
        address[] memory _signers,
        address _offchainGuardian,
        bytes32 _salt
    ) external returns (BaseWallet) {
        BaseWallet wallet = new BaseWallet{salt: _salt}(
            _signers,
            _offchainGuardian
        );

        emit WalletCreated(address(wallet), _signers, _offchainGuardian);
        return wallet;
    }

    function walletCreationCode() public pure returns (bytes memory) {
        return type(BaseWallet).creationCode;
    }

    function getWalletPredeterministicAddress(
        address[] memory _signers,
        address _offchainGuardian,
        bytes32 _salt
    ) external view returns (address) {
        bytes32 deploymentData = keccak256(
            abi.encodePacked(
                walletCreationCode(),
                abi.encode(_signers, _offchainGuardian)
            )
        );

        return Create2.computeAddress(_salt, deploymentData);
    }
