pragma solidity >=0.8.4;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts-upgradeable/utils/structs/EnumerableSetUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/math/SafeCastUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "./libraries/ReentrancyGuard.sol";
import "./interfaces/IAllocationFactory.sol";
import "./extensions/RedKiteWhitelist.sol";

contract Allocation is AccessControl, ReentrancyGuard, RedKiteWhitelist {
    using SafeERC20 for IERC20;
    using SafeCastUpgradeable for uint256;

    bytes32 public constant MOD = keccak256("MOD");

    uint256 private constant ACCUMULATED_MULTIPLIER = 1e12;
    uint256 public constant BONE = 1e4;

    address public factory;

    IERC20 public stakeToken;
    uint256 public stakeTokenSupply;
    uint256 public lockDuration; // The duration user need to wait to withdraw.
    uint256 public minInvestment;
    uint256 public maxInvestment;
    uint256 public capacity;
    address public feeTo;
    uint256 public feePercent;
    IAllocationFactory.PoolType public poolType;
    address public projectOwner;
    uint256 public startPSTime;
    uint256 public endPSTime;
    uint256 public ratePS;
    uint256 public remainingPSAmount;

    uint256 public publicSellTotal;
    uint256 public limitForParticipant;
    uint256 public maxParticipant;
    uint256 public numberOfParticipant;
    mapping(address => bool) public isJoin;
    mapping(address => uint256) public userPSAmount;

    // The reward token!
    IERC20 public allocRewardToken;
    // Info of each user that stakes LP tokens.
    mapping(address => uint256) public userAmounts;
    // Number of token user claimed
    mapping(address => uint256) public userClaimed;
    // The block number when rewards mining starts.
    uint256 public allocStartTimeNumber;
    // The block number when rewards mining ends.
    uint256 public allocEndTimeNumber;
    // Amount of token sold
    uint256 public totalUnclaimed = 0;
    // allocation id
    uint256 public id;
    // The address of signer account
    address public signer;
    // Allow emergency withdraw feature
    bool public allocAllowEmergencyWithdraw;

    event Deposit(address indexed user, uint256 amount);
    event Withdraw(address indexed user, uint256 amount);
    event EmergencyWithdraw(address indexed user, uint256 amount);
    event TokenClaimed(address user, uint256 amount); // airdrop
    event IDO(address user, uint256 amount); // ido
    event PublicSell(address user, uint256 amount); // ps
    event SetPublicSell(uint256 startTime, uint256 endTime, uint256 rate, uint256 remainingAmount);
    event AdminWithdraw(address indexed token, uint256 amount, address receiver); // admin withdraw

    constructor() {
        IAllocationFactory.Parameters memory params = IAllocationFactory(msg.sender).getParameters();
        IAllocationFactory.PublicSellData memory ps = IAllocationFactory(msg.sender).getPSParameters();
        IAllocationFactory.ExtendData memory extendData =
        IAllocationFactory(msg.sender).getExtendData();
        IAllocationFactory.Parameters memory cloneParam = params;
        require(
            params.maxInvestment >= params.minInvestment,
            "StakingPool: Invalid investment value"
        );

        require(
            address(params.saleToken) != address(0),
            "StakingPool: invalid reward token address"
        );

        require(
            params.endTimeJoin > params.startTimeJoin && params.startTimeJoin > 0,
            "StakingPool: Invalid join time"
        );

        factory = msg.sender;
        stakeToken = IERC20(params.stakeToken);
        allocRewardToken = IERC20(params.saleToken);
        allocStartTimeNumber = params.startTimeJoin;
        allocEndTimeNumber = cloneParam.endTimeJoin;
        minInvestment = cloneParam.minInvestment;
        maxInvestment = cloneParam.maxInvestment;
        lockDuration = cloneParam.lockDuration;
        signer = cloneParam.signer;
        feeTo = cloneParam.feeTo;
        feePercent = cloneParam.feePercent;
        poolType = cloneParam.poolType;
        projectOwner = cloneParam.projectOwner;
        maxParticipant = extendData.maxParticipant;
        limitForParticipant = extendData.limitForParticipant;
        if (isIDOPool()) {
            _createPublicSell(ps.startPSTime, ps.endPSTime, ps.ratePS, ps.remainingPSAmount);
        }
    }

    receive() external payable {}

    modifier notLocked() {
        require(
            block.timestamp > allocEndTimeNumber + lockDuration,
            "StakingPool: still locked"
        );
        _;
    }

    /**
     * @notice Update allowance for emergency withdraw
     * @param _shouldAllow should allow emergency withdraw or not
     */
    function setAllowEmergencyWithdraw(bool _shouldAllow) external {
        require(
            IAccessControl(address(factory)).hasRole(MOD, msg.sender),
            "StakingPool: require mod role"
        );
        allocAllowEmergencyWithdraw = _shouldAllow;
    }

    /**
     * @notice set capacity
     * @param _cap should allow emergency withdraw or not
     */
    function setCapacity(uint256 _cap) external {
        require(
            IAccessControl(address(factory)).hasRole(MOD, msg.sender),
            "StakingPool: require mod role"
        );
        capacity = _cap;
    }

    /**
     * @notice Deposit LP tokens to the farm for reward allocation.
     * @param _amount amount to stake
     */
    function stake(uint256 _amount) external {
        require(
            address(stakeToken) != address(0),
            "StakingPool: Not accept token"
        );
        require(!isIDOPool(), "NOT VALID TYPE POOL");
        _baseValidateStake(_amount);

        userAmounts[msg.sender] = userAmounts[msg.sender] + _amount;
        stakeTokenSupply = stakeTokenSupply + _amount;
        stakeToken.safeTransferFrom(
            address(msg.sender),
            address(this),
            _amount
        );
        emitStakingEvent(msg.sender, _amount);
    }

    /**
     * @notice Deposit ROSE to the farm for reward allocation.
     */
    function stakeROSE() external payable {
        uint256 amount = msg.value;
        require(
            address(stakeToken) == address(0),
            "StakingPool: Not accept native currency"
        );
        require(!isIDOPool(), "NOT VALID TYPE POOL");
        _baseValidateStake(amount);

        userAmounts[msg.sender] = userAmounts[msg.sender] + amount;
        stakeTokenSupply = stakeTokenSupply + amount;
        emitStakingEvent(msg.sender, amount);
    }

    /**
     * @notice withdraw and claim tokens from
     * @param _candidate sender address
     * @param _amount total amount
     * @param _signature mess signature
     */
    function withdrawROSE(
        address _candidate,
        uint256 _amount,
        bytes memory _signature
    ) external notLocked {
        require(
            address(stakeToken) == address(0),
            "StakingPool: Not accept native currency"
        );
        require(!isIDOPool(), "INVALID TYPE POOL");
        uint256 amount = userAmounts[msg.sender];
        userAmounts[msg.sender] = 0;
        stakeTokenSupply = stakeTokenSupply - amount;

        claimTokens(_candidate, _amount, _signature);
        payable(msg.sender).transfer(amount);
        emitWithdrawEvent(msg.sender, amount);
    }

    /**
     * @notice withdraw and claim tokens from
     * @param _candidate sender address
     * @param _amount total amount
     * @param _signature mess signature
     */
    function withdraw(
        address _candidate,
        uint256 _amount,
        bytes memory _signature
    ) external notLocked {
        require(!isIDOPool(), "INVALID TYPE POOL");
        require(
            address(stakeToken) != address(0),
            "StakingPool: Not accept token"
        );
        uint256 amount = userAmounts[msg.sender];
        userAmounts[msg.sender] = 0;
        stakeTokenSupply = stakeTokenSupply - amount;

        claimTokens(_candidate, _amount, _signature);
        stakeToken.safeTransfer(address(msg.sender), amount);
        emitWithdrawEvent(msg.sender, amount);
    }

    function IDOToken( uint256 _amount ) external {
        require(isIDOPool(), "INVALID TYPE POOL");
        require(
            address(stakeToken) != address(0),
            "IDOPool: Not accept token"
        );
        _baseValidateStake(_amount);

        userAmounts[msg.sender] = userAmounts[msg.sender] + _amount;
        require(
            limitForParticipant == 0 ||
            userAmounts[msg.sender] <= limitForParticipant,
            "IDOPool: exceed limit for user"
        );
        if (!isJoin[msg.sender]) {
            isJoin[msg.sender] = true;
            require(
                numberOfParticipant == 0 ||
                numberOfParticipant + 1 <= maxParticipant,
                "IDOPool: exceed max participant"
            );
            numberOfParticipant ++;
        }
        stakeTokenSupply = stakeTokenSupply + _amount;

        uint256 feeAmount;
        if (poolType == IAllocationFactory.PoolType.TOKEN_FEE_IDO) {
            feeAmount = getFeeAmount(_amount);
        }

        uint256 tokenAmount = _amount - feeAmount;
        if (feeAmount > 0) {
            stakeToken.safeTransferFrom(
                address(msg.sender),
                feeTo,
                feeAmount
            );
        }
        stakeToken.safeTransferFrom(
            address(msg.sender),
            projectOwner,
            tokenAmount
        );
        emitIDOEvent(msg.sender, _amount);
    }

    function IDOROSE() external payable{
        uint256 _amount = msg.value;
        require(isIDOPool(), "INVALID TYPE POOL");
        require(
            address(stakeToken) == address(0),
            "IDOPool: Not accept token"
        );
        _baseValidateStake(_amount);

        userAmounts[msg.sender] = userAmounts[msg.sender] + _amount;
        require(
            limitForParticipant == 0 ||
            userAmounts[msg.sender] <= limitForParticipant,
            "IDOPool: exceed limit for user"
        );
        if (!isJoin[msg.sender]) {
            isJoin[msg.sender] = true;
            require(
                numberOfParticipant == 0 ||
                numberOfParticipant + 1 <= maxParticipant,
                "IDOPool: exceed max participant"
            );
            numberOfParticipant ++;
        }
        stakeTokenSupply = stakeTokenSupply + _amount;

        uint256 feeAmount;
        if (poolType == IAllocationFactory.PoolType.TOKEN_FEE_IDO) {
            feeAmount = getFeeAmount(_amount);
        }
        uint256 tokenAmount = _amount - feeAmount;
        if (feeAmount > 0) {
            payable(feeTo).transfer(feeAmount);
        }
        payable(projectOwner).transfer(tokenAmount);
        emitIDOEvent(msg.sender, _amount);
    }

    /**
     * @notice Claim token
     * @param _candidate sender address
     * @param _amount total amount
     * @param _signature mess signature
     */
    function claimTokens(
        address _candidate,
        uint256 _amount,
        bytes memory _signature
    ) public nonReentrant {
        require(
            _verifyClaimToken(_candidate, _amount, _signature),
            "StakingPool: not allow to claim"
        );
        require(
            _amount >= userClaimed[_candidate],
            "StakingPool: amount must greater than claimed"
        );

        uint256 claimAmount = _amount - userClaimed[_candidate];

        userClaimed[_candidate] = userClaimed[_candidate] + claimAmount;

        uint256 feeAmount;
        if (poolType != IAllocationFactory.PoolType.TOKEN_FEE_IDO) {

            feeAmount = getFeeAmount(claimAmount);
        }
        if (feeAmount > 0) {
            allocRewardToken.safeTransfer(feeTo, feeAmount);
        }
        allocRewardToken.safeTransfer(msg.sender, claimAmount - feeAmount);

        emit TokenClaimed(msg.sender, claimAmount);
    }

    /**
     * @notice Withdraw without caring about rewards. EMERGENCY ONLY.
     */
    function emergencyWithdraw() external {
        require(
            allocAllowEmergencyWithdraw,
            "StakingPool: emergency withdraw is not allowed yet"
        );
        require(!isIDOPool(), "INVALID TYPE POOL");
        uint256 amount = userAmounts[msg.sender];
        userAmounts[msg.sender] = 0;
        stakeTokenSupply = stakeTokenSupply - amount;

        if (address(stakeToken) == address(0)) {
            payable(msg.sender).transfer(amount);
        } else {
            stakeToken.safeTransfer(address(msg.sender), amount);
        }
        emit EmergencyWithdraw(msg.sender, amount);
    }

    function adminWithdraw(
        address _outputToken,
        uint256 _amount,
        address _receiver
    ) external {
        require(
            IAccessControl(address(factory)).hasRole(MOD, msg.sender),
            "StakingPool: require mod role"
        );

        if (_outputToken == address(0)) {
            (bool sent, ) = _receiver.call{ value: _amount }("");
            require(sent, "Failed to send Ether");
            return;
        }

        IERC20(_outputToken).transfer(_receiver, _amount);
        emit AdminWithdraw(_outputToken, _amount, _receiver);
    }

    function setPublicSell(
        uint256 _startPSTime,
        uint256 _endPSTime,
        uint256 _ratePS,
        uint256 _remainingPSAmount
    ) external {
        require(
            IAccessControl(address(factory)).hasRole(MOD, msg.sender),
            "StakingPool: require mod role"
        );
        require(
            _startPSTime == 0 ||
            (_startPSTime > block.timestamp && _startPSTime < _endPSTime),
            "INVALID START TIME"
        );
        _createPublicSell(_startPSTime, _endPSTime, _ratePS, _remainingPSAmount);
        emitSetPublicSell(_startPSTime, _endPSTime, _ratePS, _remainingPSAmount);
    }

    function _createPublicSell(
        uint256 _startPSTime,
        uint256 _endPSTime,
        uint256 _ratePS,
        uint256 _remainingPSAmount
    ) private {
        require(isIDOPool(), "INVALID TYPE POOL");
        require(_startPSTime == 0 || block.timestamp < _startPSTime, "INVALID START TIME");
        require(_startPSTime <= _endPSTime, "INVALID END TIME");
        startPSTime = _startPSTime;
        endPSTime = _endPSTime;
        ratePS = _ratePS;
        remainingPSAmount = _remainingPSAmount;
    }

    function buyPSToken( uint256 _amount ) external {
        require(
            address(stakeToken) != address(0),
            "IDOPool: Not accept token"
        );
        require(canSell(_amount), "CANNOT BUY TOKEN");

        userPSAmount[msg.sender] = userPSAmount[msg.sender] + _amount;
        publicSellTotal = publicSellTotal + _amount;

        uint256 feeAmount;
        if (poolType == IAllocationFactory.PoolType.TOKEN_FEE_IDO) {
            feeAmount = getFeeAmount(_amount);
        }

        uint256 tokenAmount = _amount - feeAmount;
        if (feeAmount > 0) {
            stakeToken.safeTransferFrom(
                address(msg.sender),
                feeTo,
                feeAmount
            );
        }
        stakeToken.safeTransferFrom(
            address(msg.sender),
            projectOwner,
            tokenAmount
        );
        emitPSEvent(msg.sender, _amount);
    }

    function buyPSROSE() external payable{
        uint256 _amount = msg.value;
        require(
            address(stakeToken) == address(0),
            "IDOPool: Not accept token"
        );
        require(canSell(_amount), "CANNOT BUY TOKEN");

        userPSAmount[msg.sender] = userPSAmount[msg.sender] + _amount;
        publicSellTotal = publicSellTotal + _amount;


        uint256 feeAmount;
        if (poolType == IAllocationFactory.PoolType.TOKEN_FEE_IDO) {
            feeAmount = getFeeAmount(_amount);
        }

        uint256 tokenAmount = _amount - feeAmount;
        if (feeAmount > 0) {
            payable(feeTo).transfer(feeAmount);
        }
        payable(projectOwner).transfer(tokenAmount);
        emitPSEvent(msg.sender, _amount);
    }

    function emitPSEvent(address _sender, uint256 _amount) private {
        IAllocationFactory(factory).emitPublicSellEvent(_sender, _amount, poolType);
    }

    function emitStakingEvent(address _sender, uint256 _amount) private {
        IAllocationFactory(factory).emitStakingEvent(_sender, _amount, poolType);
    }

    function emitIDOEvent(address _sender, uint256 _amount) private {
        IAllocationFactory(factory).emitIDOEvent(_sender, _amount, poolType);
    }

    function emitWithdrawEvent(address _sender, uint256 _amount) private {
        IAllocationFactory(factory).emitWithdrawEvent(_sender, _amount, poolType);
    }

    function emitSetPublicSell(
        uint256 _startPSTime,
        uint256 _endPSTime,
        uint256 _ratePS,
        uint256 _remainingPSAmount
    ) private {
        IAllocationFactory(factory).emitSetPublicSell(_startPSTime, _endPSTime, _ratePS, _remainingPSAmount);
    }

    // ---------------- view function -------------------
    function _baseValidateStake(uint256 _amount) private view {
        require(
            ((_amount <= maxInvestment && maxInvestment > 0) ||
                (maxInvestment == 0)) && _amount >= minInvestment,
            "StakingPool: Invalid amount"
        );
        require(
            block.timestamp >= allocStartTimeNumber &&
                block.timestamp < allocEndTimeNumber,
            "StakingPool: Not in stake time"
        );

        if (capacity > 0) {
            require(
                stakeTokenSupply + _amount <= capacity,
                "StakingPool: Full capacity"
            );
        }
    }

    function isIDOPool() public view returns (bool) {
        if (
            poolType == IAllocationFactory.PoolType.REWARD_FEE_IDO ||
            poolType == IAllocationFactory.PoolType.TOKEN_FEE_IDO
        ) {
            return true;
        }
        return false;
    }


    /**
     * @dev Verify permission of purchase
     * @param _candidate Address of buyer
     * @param _amount claimable amount
     * @param _signature Signature of signers
     */
    function _verifyClaimToken(
        address _candidate,
        uint256 _amount,
        bytes memory _signature
    ) private view returns (bool) {
        require(msg.sender == _candidate, "StakingPool: wrong candidate");

        return (verifyClaimToken(signer, _candidate, _amount, _signature));
    }

    function getFeeAmount(uint256 amount) public view returns (uint256) {
        return amount * feePercent / BONE;
    }

    function getClaimAmount(uint256 amount) public view returns (uint256) {
        return amount - getFeeAmount(amount);
    }

    function inPublicSellDuration() public view returns (bool) {
        uint256 time = block.timestamp;
        if (time >= startPSTime && time <= endPSTime) {
            return true;
        }
        return false;
    }

    function isValidRemainingToken(uint256 _amount) public view returns (bool) {
        if (ratePS == 0 ) {
            return true;
        }
        if (remainingPSAmount - _amount * ratePS >= 0) {
            return true;
        }
        return false;
    }

    function canSell(uint256 _amount) public view returns (bool) {
        if (!isIDOPool()) {
            return false;
        }
        if (!inPublicSellDuration()) {
            return false;
        }
        if (!isValidRemainingToken(_amount)) {
            return false;
        }
        return true;
    }
}

