pragma solidity ^0.8.0;
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "./Wallet.sol";

contract WalletHolder is Ownable{
    address[] internal Wallets;
    event WalletCreated(address wallet);
    event Collected(uint256 count,uint256 amount);

    function createWallet(bytes32 salt) public onlyOwner returns(address newAddr){
        bytes memory bytecode = type(Wallet).creationCode;
        assembly {
            let codeSize := mload(bytecode) 
            newAddr := create2(
                0x0, 
                add(bytecode, 0x20), 
                codeSize,
                salt
            )
            if iszero(extcodesize(newAddr)) {
                revert(0, 0)
            }
        }
        emit WalletCreated(newAddr);

        Wallets.push(newAddr);
    }

    function collect(address walletAddr,address token,address collectTo) public onlyOwner{
        Wallet wallet = Wallet(walletAddr);
        uint256 balance = wallet.tokenBalance(token);

        require(balance > 0,"Account balance is 0");

        wallet.tokenWithdraw(token,collectTo);
        emit Collected(1,balance);
    }

    function batchCollect( uint256 min, address[] memory walletAddrs_,address token,address collectTo) public onlyOwner{
        uint256 count;
        uint256 amount;

        for(uint i = 0; i < walletAddrs_.length; i++){
            Wallet wallet = Wallet(walletAddrs_[i]);

            uint256 balance = wallet.tokenBalance(token);
            if (balance >= min){
                wallet.tokenWithdraw(token,collectTo);
                count ++;
                amount += balance;
            }
        }

        emit Collected(count,amount);
    }

    function walletCount() public view returns(uint256){
        return Wallets.length;
    }

    function wallets(uint256 index) public view returns(address){
        return Wallets[index];
    }

    function toBytes(uint256 x) public pure returns (bytes memory c) {
        bytes32 b = bytes32(x);
        c = new bytes(32);
        for (uint i=0; i < 32; i++) {
            c[i] = b[i];
        }
    }
}

