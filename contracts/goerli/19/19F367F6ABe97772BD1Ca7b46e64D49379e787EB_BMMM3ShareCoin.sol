// import '@uniswap/v2-core/contracts/interfaces/IUniswapV2Pair.sol';

import "./interfaces/Uniswap.sol";
import "./interfaces/AggregatorV3Interface.sol";

contract BMMM3ShareCoin is ERC20, Ownable, ERC20Burnable {
    // Uniswap addresses
    address private constant ROUTER = 0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D;
    address private constant WETH = 0xC02aaA39b223FE8D0A0e5C4F27eAD9083C756Cc2;
    address private constant USDC = 0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174;
   
    // BMMM3 Platform addresses
    address public BMMM3TreasuryAddress;
    
    address public BMMM3DAOAddress;

    uint256 public minAmountToMint;
    uint256 public USDFactor;

    // Chainlink data feed interface to get MATIC-USDC price rate
    AggregatorV3Interface internal priceFeed;

    // Uniswap interface for swaping between MATIC-USDC-BMMM3SC
    IUniswapV2Router public uniswap;

    // USDC token interface|
    IERC20 _USDCToken; 

    event Response(bool success, bytes data);
    event CoinsMinted(
        uint256 rate,
        uint256 amountOfMATICSwaped,
        uint256 amountOfBMMM3SCMinted,
        uint256 amountOfBMMM3SCForAuthor,
        uint256 amountOfBMMM3SCForTreasury,
        uint256 amountOfBMMM3SCForLiquidity,
        uint256 amountOfBMMM3SCForDAO
    );
    event Log(string message, uint256 val);

    constructor(
        string memory _name,
        string memory _symbol,
        uint256 _initialSupply,
        address _agregatorAddress,
        address payable _BMMM3TreasuryAddress,
        address payable _BMMM3DAOAddress,
        uint256 _InitialUSDFactor
    ) ERC20(_name, _symbol) {
        uniswap = IUniswapV2Router(ROUTER);
        priceFeed = AggregatorV3Interface(_agregatorAddress);
        BMMM3TreasuryAddress = _BMMM3TreasuryAddress;
        BMMM3DAOAddress = _BMMM3DAOAddress;
        minAmountToMint = 0.00618 ether;
        USDFactor = _InitialUSDFactor;
        _USDCToken = IERC20(USDC);
        _mint(msg.sender, _initialSupply * 10**decimals());
    }
    function getLatestPrice() public view returns (int256) {
        (, int256 price, , , ) = priceFeed.latestRoundData();
        return price;
    }

    function setMinAmountToMint(uint256 _mintPrice) internal {
        minAmountToMint = _mintPrice;
    }

    function getMinAmountToMint() public view returns (uint256) {
        return minAmountToMint;
    }

    function getMATICToUSDCRate() public view returns (uint256 _rate){
        // retrieve MATIC-USD Price from Chainlink data feed
        int256 MATICUSDPrice = getLatestPrice();
        uint8 USDCDecimals = priceFeed.decimals();
        _rate = scaleValueFromDecimalsToDecimals(uint256(MATICUSDPrice), USDCDecimals, 18);
    }

    function mint() public payable {
        require(
            msg.value > getMinAmountToMint(),
            "Not enough ETH for minumum to mint"
        );
        
        //Calculate amount of USDC to receive for swaping msg.value MATIC
        uint256 amountOfUSDCToReceive = ( ( (msg.value * uint256(getMATICToUSDCRate())) / 10 ** 18 ) + 5 ) / 10;
        
        // Swap Native Token to USDC
        address[] memory path = new address[](2);
        path[0] = uniswap.WETH();
        path[1] = address(USDC);
        uint256[] memory swapResult = uniswap.swapExactETHForTokens{value: msg.value}(
            amountOfUSDCToReceive,
            path,
            address(this),
            block.timestamp + 300
        );

        // Handle USDC 6 digit decimals by converting to 18 digit decimals
        uint256 amountInUSDCw6decimals = swapResult[1];
        uint256 amountInUSDCw18decimals = scaleValueFromDecimalsToDecimals(
            amountInUSDCw6decimals,
            6,
            18
        );
        
        // Calculate how much BMMM3SC to mint at 1 BMMM3SC = $ USDFactor USD conversion rate
        uint256 _amountOfBMMM3SCToMint = (((amountInUSDCw18decimals * 10**19) / USDFactor) + 5) / 10;

        // Divide the amount Of BMMM3SC To Mint into shares as:
        /**
            BMMM3 Author         2.128623625 % 
            BMMM3 Treasury       2.461179748 % 
            Sender              91.803398874 % 
            BMMM3 DAO            3.606797749 % 
         */
        uint256 _amountOfBMMM3SCForAuthor       = (( 2128623629 * 10**9) * _amountOfBMMM3SCToMint) / 10**20; //  2.128623629 % BMMM3SC Author
        uint256 _amountOfBMMM3SCForTreasury     = (( 2461179748 * 10**9) * _amountOfBMMM3SCToMint) / 10**20; //  2.461179748 % BMMM3SC Treasury
        uint256 _amountOfBMMM3SCForSender       = ((91803398874 * 10**9) * _amountOfBMMM3SCToMint) / 10**20; // 91.803398874 % BMMM3SC Sender
        uint256 _amountOfBMMM3SCForDAO          = (( 3606797749 * 10**9) * _amountOfBMMM3SCToMint) / 10**20; //  3.606797749 % BMMM3SC DAO
        
        // Divide USDC for share parties
        uint256 _amountOfUSDCForAuthor          = (( 2128623629 * 10**9) * amountInUSDCw6decimals) / 10**20; //  2.128623629 % USDC Author
        uint256 _amountOfUSDCForTreasury        = ((12461179748 * 10**9) * amountInUSDCw6decimals) / 10**20; // 74.264578622 % USDC Treasury
        uint256 _amountOfUSDCForDAO             = ((23606797749 * 10**9) * amountInUSDCw6decimals) / 10**20; // 23.606797749 % USDC DAO
        
        // Transfer USDC to share parties
        bool sentAuthor     = _USDCToken.transfer(owner(), _amountOfUSDCForAuthor);
        bool sentTreasury   = _USDCToken.transfer(BMMM3TreasuryAddress, _amountOfUSDCForTreasury);
        bool sentDAO        = _USDCToken.transfer(BMMM3DAOAddress, _amountOfUSDCForDAO);

        require(sentAuthor,     "Trasfer to Author Fail");
        require(sentTreasury,   "Transfer to Treasury Fail");
        require(sentDAO,        "Transfer to DAO Fail");
        
        // Mint a total of _amountOfBMMM3SCToMint divided into its share parties  
        _mint(owner(),                  _amountOfBMMM3SCForAuthor);
        _mint(BMMM3TreasuryAddress,     _amountOfBMMM3SCForTreasury);
        _mint(BMMM3DAOAddress,          _amountOfBMMM3SCForDAO);
        _mint(msg.sender,               _amountOfBMMM3SCForSender);
    
        emit CoinsMinted(
            getMATICToUSDCRate(),
            msg.value,
            _amountOfBMMM3SCToMint,
            _amountOfBMMM3SCForAuthor,
            _amountOfBMMM3SCForTreasury,
            _amountOfBMMM3SCForSender,
            _amountOfBMMM3SCForDAO
        );

        // 0.2001618% BMMM3 Price Increment Factor Amount
        // USDFactor += ((2001618 * 10**11) * msg.value) / 10**20;
        USDFactor += ((2001618 * 10**11) * amountInUSDCw18decimals) / 10**20;
    }


    function scaleValueFromDecimalsToDecimals(
        uint256 _value,
        uint8   _originDecimals,
        uint8   _targetDecimals
    ) internal pure returns (uint256) {
        if (_originDecimals < _targetDecimals) {
            return _value * ( 10 ** uint256(_targetDecimals - _originDecimals));
        } else if (_originDecimals > _targetDecimals) {
            return _value / ( 10 ** uint256(_originDecimals - _targetDecimals));
        }
        return _value;
    }

}

