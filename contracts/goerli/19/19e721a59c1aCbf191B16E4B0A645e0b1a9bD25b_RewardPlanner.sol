import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeCast.sol";

import "@openzeppelin/contracts/access/IAccessControl.sol";
import "@openzeppelin/contracts/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts/utils/introspection/ERC165.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

import "./interfaces/IRewardPlanner.sol";
import "./utils/CommonChecks.sol";

/// @dev manages token unlocking based on piecewise-linear function
contract RewardPlanner is
    IRewardPlanner,
    CommonChecks,
    Initializable,
    ReentrancyGuard,
    ERC165
{
    using SafeCast for uint;
    using SafeERC20 for IERC20;

    IAccessControl public accessRegistry;
    IERC20 public token;
    address public distributor;

    uint public totalAmount;
    bytes32 public adminRoleName;
    IntervalInfo[] internal _intervals;

    modifier onlyRole(bytes32 _roleName) {
        require(
            accessRegistry.hasRole(_roleName, msg.sender),
            "RewardPlanner: FORBIDDEN"
        );
        _;
    }

    /// @dev checks whether interface id is supported
    /// @param interfaceId interface id to be checked
    function supportsInterface(bytes4 interfaceId)
        public
        view
        virtual
        override
        returns (bool)
    {
        return
            interfaceId == type(IRewardPlanner).interfaceId ||
            super.supportsInterface(interfaceId);
    }

    /// @dev constructs the RewardPlanner contract instance
    /// @param _accessRegistry access registry contract address
    /// @param _token distribution token address
    /// @param _adminRoleName admin role name (human-readable)
    constructor(
        address _accessRegistry,
        address _token,
        string memory _adminRoleName
    )
        notZeroAddress(_accessRegistry)
        notZeroAddress(_token)
        notEmptyString(_adminRoleName)
    {
        require(
            IERC165(_accessRegistry).supportsInterface(
                type(IAccessControl).interfaceId
            ),
            "RewardPlanner: UNSUPPORTED_ADDRESS"
        );

        accessRegistry = IAccessControl(_accessRegistry);
        token = IERC20(_token);
        adminRoleName = keccak256(abi.encodePacked(_adminRoleName));
    }

    function initialize(address _distributor)
        external
        notZeroAddress(_distributor)
        initializer
    {
        distributor = _distributor;
    }

    /// @dev calculates unlocked amount
    /// @param _ts timestamp in seconds
    /// @return unlocked tokens amount at specified timestamp
    function unlockedAmount(uint32 _ts) external view returns (uint) {
        return _valueAt(_ts);
    }

    /// @dev calculates reward amount between 2 dates
    /// @param _from the least date
    /// @param _to the greater date
    /// @return delta reward amount
    /// required that _from <= _to, otherwise 0 is returned
    function delta(uint32 _from, uint32 _to) external view returns (uint) {
        return (_from < _to) ? _valueAt(_to) - _valueAt(_from) : 0;
    }

    /// @dev returns the number of intervals
    function intervalsCount() external view returns (uint) {
        return _intervals.length;
    }

    /// @dev returns interval info by index
    /// @param _index interval index in array
    /// @return amount amount of reward for the interval
    /// @return start the start timestamp
    /// @return end the end timestamp
    function intervalAt(uint _index)
        public
        view
        returns (
            uint amount,
            uint32 start,
            uint32 end
        )
    {
        require(_index < _intervals.length, "RewardPlanner: OUT_OF_BOUND");
        IntervalInfo memory _interval = _intervals[_index];
        (amount, start, end) = (
            _interval.amount,
            _interval.start,
            _interval.end
        );
    }

    /// @dev add a new interval to the tail of intervals array
    /// @param _amount amount of reward per the interval
    /// @param _start the start the interval timestamp
    /// @param _end the end of the interval timestamp
    function appendInterval(
        uint _amount,
        uint32 _start,
        uint32 _end
    )
        external
        notZeroAddress(distributor) // initialized
        onlyRole(adminRoleName) // only admin can append
    {
        _appendInterval(_amount, _start, _end);
    }

    function _appendInterval(
        uint _amount,
        uint32 _start,
        uint32 _end
    ) internal {
        // can't add interval starting in the past
        require(_start > block.timestamp, "RewardPlanner: INVALID_START");
        totalAmount += _amount;
        require(_end > _start, "RewardPlanner: INVALID_ARG");

        if (_intervals.length > 0) {
            (, , uint32 _lastEnd) = lastInterval();
            _checkOverlap(_lastEnd, _start);
        }

        _intervals.push(IntervalInfo(_amount, _start, _end));
        token.safeTransferFrom(msg.sender, distributor, _amount);

        emit IntervalAdded(_amount, _start, _end);
    }

    /// @dev add multiple intervals to the tail of intervals array
    /// @param _data array of intervals
    function bulkAddIntervals(IntervalInfo[] memory _data)
        external
        notZeroAddress(distributor)
        onlyRole(adminRoleName)
    {
        require(_data.length > 0, "RewardPlanner: NO_DATA");
        IntervalInfo memory _prev = _data[0];
        if (_intervals.length > 0) {
            IntervalInfo memory _last = _intervals[_intervals.length - 1];
            _checkOverlap(_last.end, _prev.start);
        }
        require(_prev.start > block.timestamp, "RewardPlanner: INVALID_START");
        _checkInterval(_prev); // check first interval

        uint _amount = _prev.amount;
        for (uint i = 1; i < _data.length; i++) {
            IntervalInfo memory _curr = _data[i];
            _checkInterval(_curr);
            _checkOverlap(_prev.end, _curr.start);
            _amount += _curr.amount;
            _prev = _curr;
        }

        token.safeTransferFrom(msg.sender, distributor, _amount);

        for (uint i = 0; i < _data.length; i++) {
            IntervalInfo memory info = _data[i];
            _intervals.push(info);
            emit IntervalAdded(info.amount, info.start, info.end);
        }
    }

    /// @dev removes the last interval if it is not started yet
    /// and transfer unused funds to the admin
    function removeLastInterval() external onlyRole(adminRoleName) {
        (uint _amount, uint32 _start, uint32 _end) = lastInterval();
        require(block.timestamp < _start, "RewardPlanner: ALREADY_STARTED");
        _intervals.pop();

        totalAmount -= _amount;

        emit IntervalRemoved(_amount, _start, _end);
    }

    /// @dev returns last interval info
    /// @return amount interval's distribution amount
    /// @return start interval's start timestamp
    /// @return end interval's end timestamp
    function lastInterval()
        public
        view
        returns (
            uint amount,
            uint32 start,
            uint32 end
        )
    {
        require(_intervals.length > 0, "RewardPlanner: NO_INTERVALS");
        (amount, start, end) = intervalAt(_intervals.length - 1);
    }

    /// @dev returns scope of definition of the reward function
    function getDefinition() external view returns (uint32 start, uint32 end) {
        uint _count = _intervals.length;
        require(_count > 0, "RewardPlanner: NO_INTERVALS");
        (, start, ) = intervalAt(0);
        (, , end) = intervalAt(_count - 1);
    }

    function _checkInterval(IntervalInfo memory _interval) internal pure {
        require(_interval.start < _interval.end, "RewardPlanner: INVALID_ARG");
        require(_interval.amount > 0, "RewardPlanner: ZERO_AMOUNT");
    }

    function _checkOverlap(uint32 _start, uint32 _end) internal pure {
        require(_start <= _end, "RewardPlanner: SEGMENT_OVERLAP");
    }

    /// @dev calculates function value at specified time point
    function _valueAt(uint32 _x) private view returns (uint result) {
        for (uint16 i = 0; i < _intervals.length; ++i) {
            IntervalInfo memory _s = _intervals[i];
            if (_x <= _s.start) break;
            if (_x >= _s.end) {
                result += _s.amount;
            } else {
                result += ((_x - _s.start) * _s.amount) / (_s.end - _s.start);
            }
        }
    }
}

