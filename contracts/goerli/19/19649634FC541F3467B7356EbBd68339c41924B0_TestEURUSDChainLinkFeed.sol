pragma solidity 0.8.9;

import "@chainlink/contracts/src/v0.8/interfaces/AggregatorV3Interface.sol";

contract TestEURUSDChainLinkFeed is AggregatorV3Interface {
    uint256 public constant TEST_VERSION = 887766;
    int256 public exchangeRate;

    function setExchangeRate(int256 _exchangeRate) public {
        exchangeRate = _exchangeRate;
    }

    function decimals() external pure override returns (uint8) {
        return 8;
    }

    function description() external pure override returns (string memory) {
        return "EURUSD";
    }

    function version() external pure override returns (uint256) {
        return TEST_VERSION;
    }

    // getRoundData and latestRoundData should both raise "No data present"
    // if they do not have data to report, instead of returning unset values
    // which could be misinterpreted as actual reported values.
    function getRoundData(uint80 _roundId)
        external
        view
        override
        returns (
            uint80 roundId,
            int256 answer,
            uint256 startedAt,
            uint256 updatedAt,
            uint80 answeredInRound
        )
    {
        _roundId = _roundId; // getting rid of compiler warning
        return (0, exchangeRate, 0, 0, 0);
    }

    function latestRoundData()
        external
        view
        override
        returns (
            uint80 roundId,
            int256 answer,
            uint256 startedAt,
            uint256 updatedAt,
            uint80 answeredInRound
        )
    {
        return (0, exchangeRate, 0, 0, 0);
    }
}

