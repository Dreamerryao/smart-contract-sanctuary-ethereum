    bytes memory bytes_;
    bytes_ = abi.encodePacked(bytes_, _openObject());
    bytes_ = abi.encodePacked(bytes_, _pushAttr("name", metadata.name, true, false));
    bytes_ = abi.encodePacked(bytes_, _pushAttr("description", metadata.description, true, false));
