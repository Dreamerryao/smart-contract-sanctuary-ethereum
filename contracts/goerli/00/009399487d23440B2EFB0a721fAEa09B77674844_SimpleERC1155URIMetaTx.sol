contract SimpleERC1155URIMetaTx is Context, ERC1155, ERC2771Recipient, Ownable {
    /// Mapping of id to uri
    mapping (uint256 => string) private _uris;

    /// Constructor
    constructor(address initTrustedForwarder) {
        _setTrustedForwarder(initTrustedForwarder);
        _setURI(1,"ipfs://QmQ47h2aZU4uaLP8t3ZqHnTYnjKPGWT2Fu3ooRMrAtM7Nh");
    }

