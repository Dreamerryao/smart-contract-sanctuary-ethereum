        IHddenAuctionHouse.Auction memory _auction = auction;

        require(_auction.startTime != 0, "Auction has not yet started");
        require(!_auction.settled, "Auction is alredy Settled");
        require(block.timestamp >= _auction.endTime, "Auction is not complete");

        auction.settled = true;
        if (_auction.bidder == address(0)) {
