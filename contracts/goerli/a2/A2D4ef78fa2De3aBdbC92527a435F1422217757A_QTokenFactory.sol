pragma solidity ^0.8.9;

import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts/proxy/beacon/IBeacon.sol";
import "@openzeppelin/contracts/proxy/beacon/BeaconProxy.sol";

import "./QToken.sol";
import "./interfaces/IQToken.sol";

contract QTokenFactory is Initializable, OwnableUpgradeable {
    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() {
        _disableInitializers();
    }

    IBeacon private beacon;

    function initialize(address _beacon) public initializer {
        __Ownable_init();

        beacon = IBeacon(_beacon);
    }

    mapping(string => address) public registry;
    address[] public tokenList;
    uint256 public tokenCount;

    event QTokenListed(string indexed symbol, address indexed token, uint idx);

    function getBeacon() public view returns (address) {
        return address(beacon);
    }

    function getBeaconImplementation() public view returns (address) {
        return beacon.implementation();
    }

    function createNewQToken(
        string memory name,
        string memory symbol,
        uint256 premint,
        address quoteToken,
        string memory objectURI,
        string memory legalDocsURI,
        address treasury
    ) external onlyOwner {
        BeaconProxy qTokenProxy = new BeaconProxy(
            address(beacon),
            abi.encodeWithSelector(QToken(address(0)).initialize.selector,
            name,
            symbol,
            premint,
            quoteToken,
            address(this),
            treasury)
        );

        address tokenAddress = address(qTokenProxy);

        IQToken qToken = IQToken(tokenAddress);

        qToken.setLegalDocsURI(legalDocsURI);
        qToken.setObjectURI(objectURI);

        qToken.transferOwnership(owner());

        registry[symbol] = tokenAddress;
        tokenList.push(tokenAddress);
        tokenCount++;

        emit QTokenListed(symbol, tokenAddress, tokenList.length - 1);
    }

    function setFlag(address _addr, bool flag) public onlyOwner {
        //
    }
}

