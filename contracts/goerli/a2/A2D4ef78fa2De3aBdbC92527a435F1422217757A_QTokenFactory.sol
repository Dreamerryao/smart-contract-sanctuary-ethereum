import "@openzeppelin/contracts-upgradeable/token/ERC20/ERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/extensions/ERC20BurnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/extensions/draft-ERC20PermitUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/utils/SafeERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/IERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";

contract QToken is
    Initializable,
    ERC20Upgradeable,
    ERC20BurnableUpgradeable,
    ERC20PermitUpgradeable,
    OwnableUpgradeable,
    ReentrancyGuardUpgradeable
{
    using SafeERC20Upgradeable for IERC20Upgradeable;

    string private _name;
    string private _symbol;

    uint256 public pricePerToken;
    address public quoteToken;
    address private registry;
    address private treasury;

    uint256 public totalHold;
    uint256 public totalInvestors;
    mapping(address => uint256) investments;
    mapping(address => uint256) holdings;

    uint256 public tgeDeadline;
    uint256 public fee;
    uint256 public minShare;

    uint8 public VERSION;

    string public objectURI;
    string public legalDocsURI;

    event TGE(TGEState newState);
    event Funding(address indexed funder, uint256 amount);
    event Claim(address indexed claimer, uint256 amount);

    enum TGEState {
        PENDING,
        RUNNING,
        FINISH_SUCCESS,
        FINISH_FAIL
    }

    TGEState public tgeState;

    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() {
        _disableInitializers();
    }

    function initialize(
        string memory name,
        string memory symbol,
        uint256 premint,
        address _quoteToken,
        address _registry,
        address _treasury
    ) initializer public {
        __ERC20_init(name, symbol);
        __ERC20Burnable_init();
        __Ownable_init();
        __ERC20Permit_init(name);

        if (premint > 0) {
            _mint(address(this), premint);
        }

        quoteToken = _quoteToken;
        registry = _registry;
        treasury = _treasury;

        tgeState = TGEState.PENDING;
        VERSION = 1;
    }

    function decimals() public pure override returns (uint8) {
        return 0;
    }

    function setObjectURI(string memory _uri) public onlyOwner {
        objectURI = _uri;
    }

    function setLegalDocsURI(string memory _uri) public onlyOwner {
        legalDocsURI = _uri;
    }

    //** supply management */

    function mint(address to, uint256 amount) public onlyOwner {
        _mint(to, amount);
    }

    function burn(uint256 amount) public override onlyOwner {
        require(
            balanceOf(address(this)) - amount >= totalHold,
            "QToken: can't burn hold tokens"
        );

        _burn(address(this), amount);
    }

    //** TGE methods */
    function updateTGE(
        uint256 deadline,
        uint256 _pricePerToken,
        uint16 _fee,
        uint256 _minShare
    ) public onlyOwner {
        require(_pricePerToken > 0, "QToken: price should be more than zero");
        require(_fee < 1000, "QToken: fee should not be more than 100%");
        require(
            _minShare <= totalSupply(),
            "QToken: min share should be equal or less than supply"
        );
        require(
            deadline > block.timestamp,
            "QToken: deadline should be in future"
        );

        pricePerToken = _pricePerToken;
        tgeDeadline = deadline;
        fee = _fee;
        minShare = _minShare;
    }

    function startTGE(uint256 _deadline, uint256 _requiredSupply)
        public
        onlyOwner
    {
        require(
            tgeState == TGEState.PENDING,
            "QToken: TGE isn't in initial state"
        );

        require(
            _requiredSupply > 0,
            "QToken: required supply should be positive"
        );

        require(
            _deadline > block.timestamp,
            "QToken: deadline should be in future"
        );

        require(minShare > 0, "QToken: min share should be positive");
        require(
            minShare <= totalSupply(),
            "QToken: min share should be equal or less than supply"
        );
        require(
            pricePerToken > 0,
            "QToken: price per token should be positive"
        );

        tgeState = TGEState.RUNNING;

        if (balanceOf(address(this)) < _requiredSupply) {
            _mint(address(this), _requiredSupply - balanceOf(address(this)));
        }

        tgeDeadline = _deadline;
        emit TGE(tgeState);
    }

    function setPricePerToken(uint256 price) public onlyOwner {
        require(price > 0, "QToken: price should be more than zero");

        pricePerToken = price;
    }

    function completeTGE(bool forceFail) public onlyOwner {
        require(tgeState == TGEState.RUNNING, "QToken: TGE isn't running");

        _completeTGE(forceFail);
    }

    function _completeTGE(bool forceFail) private {
        if (totalHold == balanceOf(address(this)) && !forceFail) {
            tgeState = TGEState.FINISH_SUCCESS;

            IERC20Upgradeable token = IERC20Upgradeable(quoteToken);
            uint256 bal = token.balanceOf(address(this));
            uint256 feeAmount = (bal * fee) / 1000;

            token.safeTransfer(treasury, feeAmount);
            token.safeTransfer(owner(), bal - feeAmount);
        } else {
            tgeState = TGEState.FINISH_FAIL;
        }

        emit TGE(tgeState);
    }

    //** claim methods */
    function claimFunding() external nonReentrant {
        require(
            tgeState == TGEState.FINISH_FAIL,
            "QToken: TGE hasn't been failed"
        );

        IERC20Upgradeable token = IERC20Upgradeable(quoteToken);

        token.safeTransfer(msg.sender, investments[msg.sender]);
        investments[msg.sender] = 0;
        totalHold -= holdings[msg.sender];
        holdings[msg.sender] = 0;
    }

    function claimTokens() external nonReentrant {
        require(
            tgeState == TGEState.FINISH_SUCCESS,
            "QToken: TGE hasn't been succeeded"
        );

        require(holdings[msg.sender] > 0, "QToken: not enough holdings");

        uint256 amount = holdings[msg.sender];
        IERC20Upgradeable(this).safeTransfer(msg.sender, amount);
        totalHold -= amount;
        holdings[msg.sender] = 0;

        emit Claim(msg.sender, amount);
    }

    //** funding methods */

    function tokensForAmount(uint256 amount)
        external
        view
        returns (uint256, uint256)
    {
        uint256 tokens = amount / pricePerToken;
        uint256 amountUsed = tokens * pricePerToken;

        return (tokens, amountUsed);
    }

    function _fund(uint256 amount, uint256 tokens) private {
        require(
            tokens >= minShare,
            "QToken: requested less amount than min share"
        );

        uint256 amountCalculated = tokens * pricePerToken;

        require(amount == amountCalculated, "QToken: price slippage");
        require(
            tokens + totalHold <= balanceOf(address(this)),
            "QToken: can't reserve more than supply"
        );

        IERC20Upgradeable token = IERC20Upgradeable(quoteToken);
        token.safeTransferFrom(msg.sender, address(this), amount);
        if (investments[msg.sender] == 0) {
            totalInvestors++;
        }
        investments[msg.sender] += amount;
        holdings[msg.sender] += tokens;
        totalHold += tokens;

        emit Funding(msg.sender, tokens);
    }

    function fundWithPermit(
        uint256 amount,
        uint256 tokens,
        uint256 deadline,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) external nonReentrant {
        IERC20PermitUpgradeable(quoteToken).permit(
            msg.sender,
            address(this),
            amount,
            deadline,
            v,
            r,
            s
        );

        _fund(amount, tokens);
    }

    function fund(uint256 amount, uint256 tokens) external nonReentrant {
        _fund(amount, tokens);
    }

    function currentHoldings(address account) external view returns (uint256) {
        return holdings[account];
    }

    function currentHoldings() external view returns (uint256) {
        return holdings[msg.sender];
    }

    function tokenInfoPacked()
        external
        view
        returns (bytes memory, bytes memory)
    {
        bytes memory data = abi.encodePacked(
            name(),
            symbol(),
            balanceOf(address(this)),
            totalHold,
            totalInvestors,
            objectURI,
            legalDocsURI
        );

        bytes memory data2 = abi.encodePacked(
            tgeState,
            pricePerToken,
            fee,
            minShare,
            tgeDeadline
        );

        return (data, data2);
    }
}

