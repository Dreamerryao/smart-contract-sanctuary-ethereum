import "./Model.sol";

library Lib {
    struct NftDetail {
        uint8 nftType;
    }
}

contract FarmStaking is IFarmStaking, ERC721Holder, ERC1155Holder, ReentrancyGuard, Initializable, Pausable, Recoverable {
    // sender -> stakingindex -> nftoken -> tokenids -> gen -> wish -> blocktime
    event Staked(address indexed, uint256, address, uint256[], uint8, string, uint256);

    // sender -> stakingindex -> nftoken -> tokenids -> gen -> blocktime
    event Unstaked(address indexed, uint256, address, uint256[], uint8, uint256);

    // useraddr -> tokenid -> time
    mapping(address => Model.StakingRecord[]) stakingMap;

    mapping(address => uint256) currentStakingCountMap;

    uint8 constant STAKING_RECORD_STATUS_STAKED = 1;
    uint8 constant STAKING_RECORD_STATUS_UNSTAKED = 2;

    IAppConf appConf;
    IFarmReward farmReward;

    function init(IAppConf _appConf) public onlyOwner {
        appConf = _appConf;

        Model.FarmAddr memory farmAddr = appConf.getFarmAddr();
        farmReward = IFarmReward(farmAddr.farmRewardAddr);

        initialized = true;
    }

    function stake(address nftToken, uint256[] calldata tokenIds, string calldata wish) public whenNotPaused nonReentrant needInit {
        require(!appConf.validBlacklist(_msgSender()), "can not stake");
        require(appConf.validStakingNftToken(nftToken), "invalid nft token");
        require(tokenIds.length > 0, "tokenids length is 0");

        IFactory nftFactory = IFactory(appConf.getNftFactoryAddr());

        uint8 nftType = appConf.getNftTokenType(nftToken);
        bool isApprovedForAll = IERC721(nftToken).isApprovedForAll(_msgSender(), address(this));

        uint8 gen = 0;

        for (uint256 i = 0; i < tokenIds.length; i++) {
            require(IERC721(nftToken).ownerOf(tokenIds[i]) == _msgSender(), "invalid nft owner");
            require(isApprovedForAll || IERC721(nftToken).getApproved(tokenIds[i]) == address(this), "tokenId not approved");

            IERC721(nftToken).safeTransferFrom(_msgSender(), address(this), tokenIds[i]);

            (, uint8 nftGen,) = nftFactory.tokenDetail(nftType, tokenIds[i]);
            if (gen == 0) {
                gen = nftGen;
            } else {
                require(gen == nftGen, "invalid nft gen");
            }
        }

        uint256 stakingIndex = 0;
        if (stakingMap[_msgSender()].length > 0) {
            stakingIndex = stakingMap[_msgSender()].length;
        }

        stakingMap[_msgSender()].push(Model.StakingRecord({
            index: stakingIndex,
            nftToken: nftToken,
            nftType: nftType,
            gen: gen,
            wish: wish,
            userAddr: _msgSender(),
            tokenIds: tokenIds,
            status: STAKING_RECORD_STATUS_STAKED,
            stakingBlockNumber: block.number,
            stakingTime: block.timestamp,
            unstakingBlockNumber: 0,
            unstakingTime: 0
        }));
        currentStakingCountMap[_msgSender()]++;

        emit Staked(_msgSender(), stakingIndex, nftToken, tokenIds, gen, wish, block.timestamp);
    }

    function unstake(uint256 index) public whenNotPaused nonReentrant needInit {
        require(!appConf.validBlacklist(_msgSender()), "can not unstake");

        _unstake(index);
    }

    function _unstake(uint256 stakingIndex) private {
        require(stakingMap[_msgSender()].length > stakingIndex, "invalid index");
        require(stakingMap[_msgSender()][stakingIndex].status == STAKING_RECORD_STATUS_STAKED, "invalid staking status");

        // claim reward
        farmReward.proxyClaim(_msgSender(), stakingIndex);

        // update status
        Model.StakingRecord storage record = stakingMap[_msgSender()][stakingIndex];
        record.status = STAKING_RECORD_STATUS_UNSTAKED;
        record.unstakingBlockNumber = block.number;
        record.unstakingTime = block.timestamp;

        currentStakingCountMap[_msgSender()]--;

        emit Unstaked(_msgSender(), stakingIndex, record.nftToken, record.tokenIds, record.gen, block.timestamp);
    }

    function unstakeAll() public whenNotPaused nonReentrant needInit {
        require(!appConf.validBlacklist(_msgSender()), "can not unstake");

        for (uint256 index = 0; index < stakingMap[_msgSender()].length; index++) {
            _unstake(index);
        }
    }

    function getCurrentStakingCount(address userAddr) public view override returns(uint256) {
        return currentStakingCountMap[userAddr];
    }

    function getStakingRecords(address userAddr) public view returns(Model.StakingRecord[] memory) {
        return stakingMap[userAddr];
    }
}

