pragma solidity ^0.8.11;

import "./libraries/Signature.sol";

contract TestSign {
    function getMessageHash(string memory _msg) public view returns (bytes32) {
        return keccak256(abi.encodePacked(_msg, address(this)));
    }

    function getSignedMessageHash(string memory _msg) public view returns (bytes32) {
        bytes32 message = getMessageHash(_msg);
        return keccak256(abi.encodePacked("\x19Ethereum Signed Message:\n32", message));
    }

    function getSignedTypedMessageHash(string memory _msg, bytes32 _domainSeparator) public view returns (bytes32) {
        bytes32 message = getMessageHash(_msg);
        return keccak256(abi.encodePacked("\x19\x01", _domainSeparator, message));
    }

    function verifyMessage(address _signer, string memory _msg, bytes memory _signature) external view returns (bool) {
        bytes32 _hash = getSignedMessageHash(_msg);
        return Signature.verify(_hash, _signer, _signature);
    }

    function verifyTypedMessage(address _signer, bytes32 _domainSeparator, string memory _msg, bytes memory _signature) external view returns (bool) {
        bytes32 _hash = getSignedTypedMessageHash(_msg, _domainSeparator);
        return Signature.verify(_hash, _signer, _signature);
    }
}

