        NativeMetaTransaction("DVinDigitalCellar")
    {
        digitalCork = _digitalCork;
        tastingToken = _tastingToken;
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(CORK_MINTER_ROLE, msg.sender);
        _grantRole(CORK_REDEEMER_ROLE, msg.sender);
        _grantRole(TT_MINTER_ROLE, msg.sender);
    }

    /**
     * @notice Admin only function to mint new Certificates of Authenticity
     * @dev Requires CONTROLLER_ROLE
     * @param _tokenId ID of new bottle
     * @param _dst Recipient of CoA token
     * @param _tastingTokens Number of tasting tokens that can be generated once redeemed
     */
    function mintCoA(
        uint256 _tokenId,
        address _dst,
        uint256 _tastingTokens
    ) external onlyRole(CORK_MINTER_ROLE) {
        // Bottles must have nonzero tasting tokens available
        if (_tastingTokens == 0) {
            revert MustSupplyNonzeroTastingTokens();
        }
        // Don't allow multiple tokens with same ID after redemption
        if (bottleData[_tokenId].maxTastingTokens != 0) {
            revert DuplicateCorkId();
        }
        bottleData[_tokenId] = Bottle(_tastingTokens, 0);
        if (!digitalCork.mintCoA(_tokenId, _dst)) {
            revert MintingFailed();
        }
    }

    /**
     * @notice Function to mark a bottle as consumed and start the process of issuing tasting tokens
     * @dev Requires caller to be token owner
     * @param _tokenId ID of new bottle
     * @param _soldierDst Recipient of soldier (empty bottle) token
     */
    function redeemCoA(uint256 _tokenId, address _soldierDst)
        external
        onlyRole(CORK_REDEEMER_ROLE)
    {
        // If burning for redemption, start counter for tasting token minting
        if (tastingToken.balanceOf(_soldierDst, _tokenId) > 0) {
            revert DuplicateTastingToken();
        }
        // Revert if burning fails
        if (!digitalCork.burnCoA(_tokenId)) {
            revert BurningFailed();
        }
        if (!tastingToken.redeemCoA(_tokenId, _soldierDst)) {
            revert RedemptionFailed();
        }
        redeemer[_tokenId] = _soldierDst;
        bottleData[_tokenId].redemptionUntil =
            block.timestamp +
            redemptionPeriod;
    }

    /**
     * @notice Function to mint tasting tokens during redemption period
     * @dev Requires TT_MINTER_ROLE or redeemer
     * @param _tokenId ID of new bottle
     * @param _dsts Array of recipients
     */
    function mintTastingTokens(uint256 _tokenId, address[] memory _dsts)
        external
        onlyRole(TT_MINTER_ROLE)
    {
        for (uint256 _i = 0; _i < _dsts.length; _i++) {
            if (tastingToken.balanceOf(_dsts[_i], _tokenId) >= 1) {
                revert DuplicateTastingToken();
            }
        }
        Bottle memory b = bottleData[_tokenId];
        // Only allow during redemption period
        if (block.timestamp > b.redemptionUntil) {
            revert RedemptionPeriodOver();
        }
        // Check how many have been redeemed already
        uint256 _mintedSupply = tastingToken.totalSupply(_tokenId);
        if (b.maxTastingTokens - _mintedSupply < _dsts.length) {
            revert InsufficientSupplyRemaining();
        }
        if (
            !tastingToken.mintTastingTokens(_tokenId, redeemer[_tokenId], _dsts)
        ) {
            revert MintingFailed();
        }
    }

    /**
     * @notice Set DVin Digital Cork address
     * @param _digitalCork new DVin Digital Cork address
     */
    function setDigitalCork(IDVinDigitalCork _digitalCork) external onlyOwner {
        digitalCork = _digitalCork;
    }

    /**
     * @notice Set DVin Tasting Token address
     * @param _tastingToken new DVin Tasting Token address
     */
    function setTastingToken(IDVinTastingToken _tastingToken)
        external
        onlyOwner
    {
        tastingToken = _tastingToken;
    }

    /**
     * @notice Set tasting token redemption period
     * @param _period Redemption period in seconds
     */
    function setRedemptionPeriod(uint256 _period) external onlyOwner {
        redemptionPeriod = _period;
    }

    /** @dev override _msgSender to use metatx friendly context */
    function _msgSender() internal view override(Context) returns (address) {
        return msgSender();
    }
}

