pragma solidity ^0.8.15;






contract Uniproxy is Ownable {

    IV3SwapRouter public immutable swapRouter;
    IWETH9 public immutable WETH9;
    address payable public beneficiary;

    event NativeSent(address indexed to, uint256 indexed amount);

    constructor(
        IV3SwapRouter _router,
        IWETH9 _weth9,
        address payable _beneficiary
    ) {
        swapRouter = _router;
        WETH9 = _weth9;
        beneficiary = _beneficiary;
    }

    fallback() external payable {}

    receive() external payable {}

    function swapSingle(
        uint256 fee, 
        IV3SwapRouter.ExactInputSingleParams calldata params
    ) external payable returns(uint256 amountOut) {
        require(msg.value >= fee, "Insufficient funds for pay fee");
        receiveToken(params.tokenIn, params.amountIn);
        amountOut = swapRouter.exactInputSingle(params);
        sendFee(fee, fee);            
    }

    function swapMultihop(
        uint256 fee, 
        address tokenIn, 
        IV3SwapRouter.ExactInputParams calldata params
    ) external payable returns(uint256 amountOut) {
        require(msg.value >= fee, "Insufficient funds for pay fee");
        receiveToken(tokenIn, params.amountIn);
        amountOut = swapRouter.exactInput(params);
        sendFee(fee, fee);
    }

    function swapToEthSingle(
        uint256 fee,
        address payable recipient,
        IV3SwapRouter.ExactInputSingleParams calldata params
    ) external payable returns(uint256 amountOut) {
        require(params.tokenOut == address(WETH9), "Weth9 only accepted for tokenOut");
        require(msg.value >= fee, "Insufficient funds");
        receiveToken(params.tokenIn, params.amountIn);
        amountOut = swapRouter.exactInputSingle(params);
        withdrawWeth(amountOut, recipient);
        sendFee(fee, fee);
    }

    function swapToEthMultihop(
        uint256 fee,
        address tokenIn,
        address payable recipient,
        IV3SwapRouter.ExactInputParams calldata params
    ) external payable returns(uint256 amountOut) {
        require(msg.value >= fee, "Insufficient funds");
        receiveToken(tokenIn, params.amountIn);
        amountOut = swapRouter.exactInput(params);        
        withdrawWeth(amountOut, recipient);
        sendFee(fee, fee);
    }

    function swapEthSingle(
        uint256 fee, 
        IV3SwapRouter.ExactInputSingleParams calldata params
    ) external payable returns(uint256 amountOut) {
        require(params.tokenIn == address(WETH9), "Weth9 only accepted for tokenIn");
        uint256 totalAmount = fee + params.amountIn;
        require(msg.value >= totalAmount, "Insufficient funds");
        receiveEth(params.amountIn);
        amountOut = swapRouter.exactInputSingle(params);
        sendFee(fee, totalAmount);
    }

    function swapEthMultihop(
        uint256 fee, 
        IV3SwapRouter.ExactInputParams calldata params
    ) external payable returns(uint256 amountOut) {
        uint256 totalAmount = fee + params.amountIn;
        require(msg.value >= totalAmount, "Insufficient funds");
        WETH9.deposit{ value: params.amountIn }();
        WETH9.approve(address(swapRouter), params.amountIn);
        amountOut = swapRouter.exactInput(params);
        sendFee(fee, totalAmount);
    }

    function setBeneficiary(address payable beneficiaryAddress) external onlyOwner {
        beneficiary = beneficiaryAddress;
    }

    function withdraw(address payable to) external onlyOwner {
        to.transfer(address(this).balance);
    }

    function withdrawWeth(uint256 amount, address payable recipient) private {
        WETH9.withdraw(amount);
        recipient.transfer(amount);
        emit NativeSent(recipient, amount);
    }

    function receiveToken(address tokenAddress, uint256 amount) private {
        IERC20 token = IERC20(tokenAddress);
        token.transfer(address(this), amount);
        token.approve(address(swapRouter), amount);
    }

    function receiveEth(uint256 amount) private {
        WETH9.deposit{ value: amount }();
        WETH9.approve(address(swapRouter), amount);
    }

    function sendFee(uint256 fee, uint256 totalEthAmount) private {
        beneficiary.transfer(fee);
        if (msg.value > totalEthAmount) {
            payable(msg.sender).transfer(msg.value - totalEthAmount);
        }
    }
}