pragma solidity ^0.8.9;

import { IERC20 } from "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import {
  SafeERC20
} from "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";

import {
  ISwapRouter
} from "@uniswap/v3-periphery/contracts/interfaces/ISwapRouter.sol";
import { SwapBase, SwapRecipient } from "./SwapBase.sol";

abstract contract SwapForToken is SwapBase {
  using SafeERC20 for IERC20;

  address internal _tokenAddress;

  function _setTokenAddress(address value) internal virtual {
    _tokenAddress = value;
  }

  function setTokenAddress(address value) external virtual onlyOwner {
    _setTokenAddress(value);
  }

  function _makeSwapForRecipient(SwapRecipient memory recipient)
    internal
    virtual
    override
  {
    _beforeMakeSwapForRecipient(recipient);
    _afterMakeSwapForRecipient(
      recipient.account,
      _dexRouter().exactInputSingle(
        ISwapRouter.ExactInputSingleParams({
          tokenIn: address(this),
          tokenOut: _tokenAddress,
          fee: _poolFee(),
          recipient: address(this),
          deadline: block.timestamp,
          amountIn: (balanceOf(address(this)) * recipient.percent) / 10000,
          amountOutMinimum: 0,
          sqrtPriceLimitX96: 0
        })
      )
    );
  }

  function _beforeMakeSwapForRecipient(SwapRecipient memory recipient)
    internal
    virtual
    override
  {}

  function _afterMakeSwapForRecipient(address recipient, uint256 amount)
    internal
    virtual
    override
  {
    IERC20(_tokenAddress).safeTransfer(recipient, amount);
  }
}