abstract contract SwapForEth is SwapForToken {
  using Address for address payable;

  function _beforeMakeSwapForRecipient(
    SwapRecipient memory /* recipient */
  ) internal virtual override {
    // always use WETH9 for swaps.
    // this should only be necessary when setting dexRouter,
    // but this is easier to test quickly.
