import { DexPoolUniV3 } from "./DexPoolUniV3.sol";

struct SwapRecipient {
  address account;
  uint16 percent;
}

abstract contract SwapBase is ERC20, Ownable, DexPoolUniV3 {
  constructor(
    uint256 initialSwapThreshold,
    address[] memory initialSwapRecipients,
    uint16[] memory initialSwapPercents
  ) {
    _swapThreshold = initialSwapThreshold;
    _setSwapRecipients(initialSwapRecipients, initialSwapPercents);
  }

  uint256 internal _swapThreshold;

  SwapRecipient[] internal _swapRecipients;

  modifier tryMakeSwapBefore() {
    _makeSwapIfBeyondThreshold();
    _;
  }

  function swapThreshold() external view virtual returns (uint256) {
    return _swapThreshold;
  }

  function _setSwapThreshold(uint256 value) internal virtual {
    _swapThreshold = value;
  }

  function setSwapThreshold(uint256 value) external virtual onlyOwner {
    _setSwapThreshold(value);
  }

  function _makeSwapIfBeyondThreshold() internal virtual {
    if (balanceOf(address(this)) >= _swapThreshold) {
      _makeSwap();
    }
  }

  function _makeSwap() internal virtual {
    for (uint256 i = 0; i < _swapRecipients.length; i++) {
      _makeSwapForRecipient(_swapRecipients[i]);
    }
  }

  /** @dev for overriding */
  function _makeSwapForRecipient(SwapRecipient memory recipient)
    internal
    virtual
  {}

  function _beforeMakeSwapForRecipient(SwapRecipient memory recipient)
    internal
    virtual
  {}

  function _afterMakeSwapForRecipient(address recipient, uint256 amount)
    internal
    virtual
  {}

  function _setSwapRecipients(
    address[] memory swapRecipients,
    uint16[] memory swapPercents
  ) internal virtual {
    require(
      swapRecipients.length == swapPercents.length,
      "Recipient arrays size must match"
    );

    uint16 percentTotal = 0;

    // delete all items in _swapRecipients array
    delete _swapRecipients;

    for (uint256 i = 0; i < swapRecipients.length; i++) {
      percentTotal += swapPercents[i];
      _swapRecipients.push(
        SwapRecipient({ account: swapRecipients[i], percent: swapPercents[i] })
      );
    }

    if (swapRecipients.length != 0) {
      require(percentTotal == 10000, "Percents must total 100%");
    }
  }

  function setSwapRecipients(
    address[] memory swapRecipients,
    uint16[] memory swapPercents
  ) external virtual onlyOwner {
    _setSwapRecipients(swapRecipients, swapPercents);
  }

  function getSwapRecipients()
    external
    view
    virtual
    returns (address[] memory recipients, uint16[] memory percents)
  {
    recipients = new address[](_swapRecipients.length);
    percents = new uint16[](_swapRecipients.length);

    for (uint256 i = 0; i < _swapRecipients.length; i++) {
      recipients[i] = _swapRecipients[i].account;
      percents[i] = _swapRecipients[i].percent;
    }
  }
}

