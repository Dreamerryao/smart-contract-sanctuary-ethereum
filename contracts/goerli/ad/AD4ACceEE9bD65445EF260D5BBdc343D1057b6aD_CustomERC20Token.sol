// import "hardhat/console.sol";

import { ERC20 } from "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import { Ownable } from "@openzeppelin/contracts/access/Ownable.sol";

// recover other tokens
import { RecoverOtherTokens } from "./RecoverOtherTokens.sol";

// tx & wallet limits
import { TxLimits } from "./TxLimits.sol";

// dex stuff - use uniswap v3
import { DexRouterUniV3 } from "./DexRouterUniV3.sol";
import { DexPoolUniV3 } from "./DexPoolUniV3.sol";

// swap
import { SwapBase } from "./SwapBase.sol";
import { SwapForEth } from "./SwapForEth.sol";

contract CustomERC20Token is
  ERC20,
  Ownable,
  RecoverOtherTokens,
  TxLimits,
  DexRouterUniV3,
  DexPoolUniV3,
  SwapForEth
{
  /**
   * @param tokenName long form name of the token
   * @param tokenSymbol short form symbol of the token
   * @param initialSupply static supply. multiplies by `decimals` automatically, to make things a bit easier.
   * @param initialMaxWalletPercent 100-10000 = 1-100%
   * @param initialMaxTxPercent 10-10000 = 0.1-100%
   * @param initialDexRouterAddress uniswap v3 router address
   */
  constructor(
    string memory tokenName,
    string memory tokenSymbol,
    uint256 initialSupply,
    uint16 initialMaxWalletPercent,
    uint16 initialMaxTxPercent,
    address initialDexRouterAddress, // 0xE592427A0AEce92De3Edee1F18E0157C05861564
    uint16 initialSwapThresholdPercent,
    address[] memory swapRecipients,
    uint16[] memory swapPercents
  )
    ERC20(tokenName, tokenSymbol)
    Ownable()
    TxLimits(initialMaxWalletPercent, initialMaxTxPercent)
    DexPoolUniV3(initialDexRouterAddress)
    SwapBase(
      ((initialSupply * 10**decimals()) * initialSwapThresholdPercent) / 10000,
      swapRecipients,
      swapPercents
    )
  {
    _mint(_msgSender(), initialSupply * 10**decimals());
  }

  /**
   * @dev override default _transfer because we want to check tx limits
   */
  function _transfer(
    address from,
    address to,
    uint256 amount
  )
    internal
    virtual
    override
    onlyWithinReceiveLimits(to, amount)
    tryMakeSwapBefore
  {
    super._transfer(from, to, amount);
  }

  function _beforeTokenTransfer(
    address from,
    address to,
    uint256 amount
  ) internal virtual override {}

  function _afterTokenTransfer(
    address from,
    address to,
    uint256 amount
  ) internal virtual override {}

  /**
   * @dev override default _transferOwnership so we can setup limit exemptions
   */
  function _transferOwnership(address newOwner) internal virtual override {
    // if not 0, revoke old owner from max wallet exemption
    _setExemptFromTxLimitsIfNotZero(owner(), false);
    // execute parent function
    super._transferOwnership(newOwner);
    // if not 0, make new owner exempt from max wallet
    _setExemptFromTxLimitsIfNotZero(owner(), true);
  }

  function _afterSetDexRouter()
    internal
    virtual
    override(DexRouterUniV3, DexPoolUniV3)
  {
    DexPoolUniV3._afterSetDexRouter();
  }
}

