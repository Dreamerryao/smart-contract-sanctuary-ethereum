  constructor(address initialRouterAddress)
    DexRouterUniV3(initialRouterAddress)
  {}

  IUniswapV3Pool private __dexPool;

  // set the default pool fee to 1% (high risk).
  uint24 private __poolFee = 10000;

  function _dexPool() internal view virtual returns (IUniswapV3Pool) {
    return __dexPool;
  }

  function dexPool() external view virtual returns (IUniswapV3Pool) {
    return _dexPool();
