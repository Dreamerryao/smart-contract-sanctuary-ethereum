    _beforeSetDexPool();
    __dexPool = IUniswapV3Pool(poolAddress);
    _afterSetDexPool();
  }

  function _beforeSetDexPool() internal virtual {}

  function _afterSetDexPool() internal virtual {}

  function setDexPool(address poolAddress) external virtual onlyOwner {
    _setDexPool(poolAddress);
