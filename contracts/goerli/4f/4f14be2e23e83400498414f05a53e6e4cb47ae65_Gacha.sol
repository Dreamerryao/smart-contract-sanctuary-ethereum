        require(_balances[equipmentId_][account_] >= 1, "Equipment: exceeds balance");
        _balances[equipmentId_][account_] -= 1;
        emit TransferSingle(msg.sender, account_, address(0), equipmentId_, 1);
    }

    function returnEquipments(address account_, uint equipmentId_) external override onlyMechaContract {
        _balances[equipmentId_][account_] += 1;
        emit TransferSingle(msg.sender, address(0), account_, equipmentId_, 1);
    }
    
