pragma solidity ^0.8.0;
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "./Token.sol";
import "./ERC1155Upgradeable.sol";
import "./Equipment.sol";

contract Gacha is Initializable, OwnableUpgradeable, ReentrancyGuardUpgradeable, ERC1155Upgradeable{
    // number of time user drew
    mapping (address=>uint256) private _numDraws;

    // type to id
    mapping (uint256 => uint256) private _typeToId;

    // id to type 
    mapping (uint256=>uint256) private _idToType;

    // id to bin edges
    mapping (uint256=>uint16[7]) private idToBinEdges;

    // mech locked balance
    mapping (address=>uint256) public mechLocked;

    // total draw
    uint256 private _totalDraws;

    // unstake start time
    mapping (address=>uint256) private _unstakeStartTime;

    // mech token contract address
    address private _mechTokenContractAddress;

    // mech token contract
    MechMaster private _mechContract;
    
    // Equipment contract address 
    address private _gameEquipmentContractAddress;

    // equipment contract
    MechaEquipment private _gameEquipmentContract;

    // minimun number of mech locked to draw
    uint256 public minNumMechRequired;

    // pending time after unstake
    uint256 public period;

    // merge amount
    uint256 public mergeAmount;

    // draw fee
    uint256 public drawFee;
    // 10 times draw fee
    uint256 public multipleDrawFee;
    
    // list ids of common equipment
    uint256[] private _commonEquipmentIds ;
    uint256[] private _unCommonEquipmentIds ;
    uint256[] private _rareEquipmentIds ;
    uint256[] private _epicEquipmentIds;
    uint256[] private _legendaryEquipmentIds;

    // can't draw after unstake
    mapping (address=>bool) public isStaking;

    // mint count equipment to random
    uint256 private _mintEquipmentCounter;
    
    // minters 
    mapping (address=>bool) public minters;

    // paused contract
    bool public isPaused;

    event DrawGacha (
        address indexed drawler,
        uint256 indexed amount,
        uint256 indexed itemType
    );
    event CraftGacha (
        address indexed crafter,
        uint256 indexed itemId
    );
    /*
     * Constructor
     */
    function __gachaInit(address mechTokenContractaddress,address equimentContractAddress) public initializer {
        __Ownable_init();
        _mechContract = MechMaster(mechTokenContractaddress);
        _mechTokenContractAddress = mechTokenContractaddress;

        _gameEquipmentContract = MechaEquipment(equimentContractAddress);
        _gameEquipmentContractAddress = equimentContractAddress;

        minNumMechRequired = 1000 * 10**18;
        period = 1;
        mergeAmount = 50;
        drawFee = 25 * 10 **  18;
        multipleDrawFee = 225 * 10 **  18;
        _mintEquipmentCounter = 0;

        setIdType(1, 1);
        setIdType(2, 2);
        setIdType(3, 3);
        setIdType(4, 4);
        setIdType(5, 5);

        setIdToBinEdges(1, [0, 15, 50, 300, 1000, 2500, 10000]);
        setIdToBinEdges(2, [0, 166, 500, 1166, 2500, 5000, 10000]);
        setIdToBinEdges(3, [0, 62, 187, 625, 1250, 3750, 10000]);
        setIdToBinEdges(4, [0, 66, 333, 1000, 2333, 5000, 10000]);
        setIdToBinEdges(5, [0, 200, 600,1400, 3000, 5000, 10000]);

        _commonEquipmentIds = [30000, 30035, 30070, 30105, 30140, 30175, 30210];
        _unCommonEquipmentIds = [30005, 30040, 30075, 30110, 30145, 30180, 30215];
        _rareEquipmentIds = [30010, 30045, 30080, 30115, 30150, 30185, 30220];
        _epicEquipmentIds = [30015, 30050, 30085, 30120, 30155, 30190, 30225];
        _legendaryEquipmentIds = [30020, 30025, 30030, 30055, 30060, 30065, 30090, 30095, 30100, 30125, 30130, 30135, 30160, 30165, 30170, 30195, 30200, 30205, 30230, 30235, 30240];

        minters[msg.sender] = true;
        isPaused = false;

    }
    modifier onlyMinter(address canidate) {
        require(minters[canidate] == true, "PERMISSION DENY");
        _;
    }
    function setURI(string memory newuri) public onlyOwner {
        _setURI(newuri);
    }

    function mint(address account, uint256 id, uint256 amount, bytes memory data)
        public
        onlyMinter(msg.sender)
    {
        require(isPaused == false, "CONTRACT PAUSED");
        _mint(account, id, amount, data);
    }

    function addMinter(address canidate) public onlyOwner {
        minters[canidate] = true;
    }
    function setDrawFee(uint256 amount) public onlyOwner {
        drawFee = amount;
    }
    function setMultipleDrawfee(uint256 amount) public onlyOwner {
        multipleDrawFee = amount;
    }
    function removeMinter(address canidate) public onlyOwner {
        minters[canidate] = false;
    }
    function paused() public onlyOwner {
        isPaused = true;
    }
    function unPaused() public onlyOwner {
        isPaused = false;
    }

    function getClaimTime() public view returns(uint256){
        if (_unstakeStartTime[msg.sender] == 0 ){
            return 0;
        }
        return _unstakeStartTime[msg.sender] + 1 days;
    }

    function getTotalDraws() public view onlyOwner returns(uint256){
        return _totalDraws;
    }

    function getNumberDraw(address canidate) public view onlyOwner returns(uint256){
        return _numDraws[canidate];
    }


    function setIdToBinEdges(uint256 id, uint16[7] memory binEdges) public onlyOwner {
        idToBinEdges[id] = binEdges;
    }

    function _randomQuanlities(uint256 randType, uint16[7] memory binEdges, uint8[6] memory quanlities) internal view returns(uint8){
        uint256 randQuanlity =  (uint256(keccak256(abi.encodePacked(block.difficulty, randType, msg.sender, _totalDraws)))) % 10000 + 1;
        uint8 quanlity = 0;
        for (uint i = 0; i < binEdges.length - 1; i++){
            if(binEdges[i] < randQuanlity && randQuanlity <= binEdges[i+1]){
                quanlity = quanlities[i];
                break;
            }
        }
        return quanlity;
    }

    function setIdType(uint256 internalId, uint256 externalId) public onlyOwner{
        _typeToId[externalId] = internalId;
        _idToType[internalId] = externalId;
    }

    function _draw(uint256 randType, address canidate) internal returns(uint256){

        if( 0 < randType && randType <= 1){
            // legendary
            _numDraws[canidate] = 0;
            return 1;
        }else if( 1 < randType && randType <= 4){
            // epic
            return 2;
        }else if (4 < randType && randType <= 20){
            // Rare
            return 3;
        }else if(20 < randType && randType <= 50){
            // uncommon
            return 4;
        }
        // common
        return 5;
    }

    function draw(uint256 time, uint256 numTurns) public {
        require(isPaused == false, "CONTRACT PAUSED");
        require(mechLocked[msg.sender] >= minNumMechRequired, "INSUFFICIENT MECH TO DRAW");
        require(msg.sender == tx.origin, "SENDER MUST BE PERSON");
        uint256 totalFee;
        if (numTurns ==1 ){
            totalFee = drawFee;
        }else{
            totalFee = multipleDrawFee;
        }
        require(_mechContract.allowance(msg.sender, address(this)) >= totalFee, "DRAW: INSUFFICIENT ALLOWENCE");
        require(_mechContract.transferFrom(msg.sender, address(this), totalFee), "DRAW: TRANSFER FAILED");
        uint256 id;
        uint8 mintAmount;
        uint8[6] memory quanlities = [50,15,10,5,3,1];
        for (uint256 i =0; i < numTurns; i++ ){
            uint256 randType= (uint(keccak256(abi.encodePacked(block.difficulty, time , msg.sender, _totalDraws, i)))) % 100 + 1;

            _numDraws[msg.sender] += 1;
            _totalDraws +=1;

            if (_numDraws[msg.sender] == 200){
                _numDraws[msg.sender] = 0;
                id = 1;
            }else{
                id = _draw(randType, msg.sender);
            }
            mintAmount= _randomQuanlities(randType, idToBinEdges[id], quanlities);

            _mint(msg.sender, _idToType[id], mintAmount, "");

            emit DrawGacha(msg.sender, mintAmount, _idToType[id]);
        }
    }

    function stake(uint256 amount) public {
        require(isPaused == false);
        require(_mechContract.balanceOf(msg.sender) >= amount, "INSUFFICIENT BALANCE");
        require(block.timestamp >= _unstakeStartTime[msg.sender] + period * 1 days, "CAN'T RESTAKE AFTER UNSTAKE");
        bool result = _mechContract.transferFrom(msg.sender, address(this), amount);
        require(result, "TRANSFER TOKEN FAILED");
        isStaking[msg.sender] = true;
        mechLocked[msg.sender] += amount;
    }

    function unstake() public{
        require(isPaused == false);
        require(isStaking[msg.sender] == true, "MUST STAKE BEFORE UNSTAKE");
        _unstakeStartTime[msg.sender] = block.timestamp;
        isStaking[msg.sender] = false;
    }

    function claim(uint256 amount) public {
        require(isPaused == false);
        require(_unstakeStartTime[msg.sender] + period * 1 days <= block.timestamp, "PENDING REQUEST");       
        require(mechLocked[msg.sender] >= amount, "INSUFFICIENT STAKED BALANCE");
        require(isStaking[msg.sender] == false, "NEED UNSTAKE BEFORE CLAIMING");

        _unstakeStartTime[msg.sender] = 0;
        mechLocked[msg.sender] -= amount;
        _mechContract.transfer(msg.sender, amount);
    }

    function getIdByType(uint256 gachaType, uint256 time) internal returns(uint256){
        uint256 index;
        _mintEquipmentCounter += 1;
        uint256 rand = (uint(keccak256(abi.encodePacked(block.difficulty, gachaType , msg.sender, time , _mintEquipmentCounter , _totalDraws))));
        if(gachaType == 1) // legendary
        { 
            index = rand % _legendaryEquipmentIds.length;
            return _legendaryEquipmentIds[index];
        }
        if (gachaType == 2)  // epic
        {
            index = rand % _epicEquipmentIds.length;
            return _epicEquipmentIds[index];
        }
        if (gachaType == 3) // rare
        {
            index = rand % _rareEquipmentIds.length;
            return _rareEquipmentIds[index];
        }
        if (gachaType == 4) // uncommon
        {
            index = rand % _unCommonEquipmentIds.length;
            return _unCommonEquipmentIds[index];
        }
        // common 
        index = rand % _commonEquipmentIds.length;
        return _commonEquipmentIds[index];
    }

    function merge(uint256 gachaId, uint256 time) public {
        require(isPaused = false);
        require(balanceOf(msg.sender, gachaId) >= mergeAmount, "NOT ENOUGH GACHA TO MERGE");
        _burn(msg.sender, gachaId, mergeAmount);
        uint256 gachaType = _idToType[gachaId];
        uint256 itemId = getIdByType(gachaType, time);

        _gameEquipmentContract.mint(msg.sender, itemId, 1);
        emit CraftGacha(msg.sender, itemId);

    }
}

