        uint256 recipeId_, 
        uint256[] calldata ingredients_, 
        uint256[] calldata results_
    ) external onlyRole(DEFAULT_ADMIN_ROLE) {
        _mergeRecipes[recipeId_] = MergeRecipe({
            ingredients: ingredients_,
            results: results_
        });
    }

    function removeMergeRecipe(uint256 recipeId_) external onlyRole(DEFAULT_ADMIN_ROLE) {
        delete _mergeRecipes[recipeId_];
    }

    function getMergeRecipe(uint256 recipeId_) external view returns (MergeRecipe memory) {
        return _mergeRecipes[recipeId_];
    }

    function mergeEquipment(uint256 recipeId_, uint256 amount_) external {
        MergeRecipe memory recipe = _mergeRecipes[recipeId_];

        for (uint i=0; i<amount_; i++) {
            for (uint j=0; j<recipe.ingredients.length; j++) {
                _burn(msg.sender, recipe.ingredients[j], 1);
            }

            for (uint k=0; k<recipe.results.length; k++) {
                _mint(msg.sender, recipe.results[k], 1, "");
            }
        }
    }
}

