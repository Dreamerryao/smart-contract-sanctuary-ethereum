import { IERC20 } from "../openzeppelin/token/ERC20/IERC20.sol";
import { SafeERC20 } from "../openzeppelin/token/ERC20/utils/SafeERC20.sol";
import { Ownable } from "../openzeppelin/access/Ownable.sol";
import { Clones } from "../openzeppelin/proxy/Clones.sol";

import { IOptionRegistry } from "../interfaces/core/IOptionRegistry.sol";
import { IOptionToken } from "../interfaces/core/IOptionToken.sol";
import { ILiquidityVault } from "../interfaces/core/ILiquidityVault.sol";
import { IUniswapV3Factory } from "../interfaces/uniswap/IUniswapV3Factory.sol";

import { DataTypes } from "../libraries/DataTypes.sol";

contract LiquidityManager is Ownable {
    using SafeERC20 for IERC20;
    using Clones for address;

    /* ============ Immutables ============ */

    // An option registry instance
    IOptionRegistry public immutable optionRegistry;
    // Uniswap v3 factory instance
    IUniswapV3Factory public immutable uniswapFactory;

    /* ============ State Variables ============ */

    // Liquidity Vault Logic. Used for minimal proxies
    address public liquidityVaultLogic;
    // Mapping of all rebalancer
    mapping(address => bool) public rebalancers;
    // Mapping of all deployed liquidity vaults
    mapping (address => address) public vaults;

    constructor(IOptionRegistry optionRegistry_, IUniswapV3Factory uniswapFactory_, address liquidityVaultLogic_) {
        require(address(optionRegistry_) != address(0x0), "LiquidityManager::zero-addr");
        require(address(uniswapFactory_) != address(0x0), "LiquidityManager::zero-addr");
        require(liquidityVaultLogic_ != address(0x0), "LiquidityManager::zero-addr");

        optionRegistry = optionRegistry_;
        uniswapFactory = uniswapFactory_;
        liquidityVaultLogic = liquidityVaultLogic_;
    }

    /* ============ Events ============ */

    /**
     @notice Emitted when a new vault is created
     @param optionToken Address of the option token
     @param vault Address of the vault created
     @param initialPrice Initial price
     @param priceA lower range price
     @param priceB upper range price
     */
    event NewVault(
        address optionToken,
        address vault,
        uint256 initialPrice,
        uint256 priceA,
        uint256 priceB
    );

    /**
     @notice Emitted when a new rebalancer is approved
     @param rebalancer Address of the approved rebalancer
     */
    event NewRebalancer(address rebalancer);

    /**
     @notice Emitted when a rebalancer is revoked
     @param rebalancer Address of the revoked rebalancer
     */
    event RevokeRebalancer(address rebalancer);

    /* ============ Stateful Methods ============ */

    /**
     @notice Create a new vault for option token
     @param optionToken Address of the option token
     @param initialPrice Price to initialize Uniswap pool
     @param priceA Starting price of the range
     @param priceB Ending price of the range
     */
    function createVault(
        IOptionToken optionToken,
        uint256 initialPrice,
        uint256 priceA,
        uint256 priceB
    ) external onlyOwner {
        require(optionRegistry.isOption(address(optionToken)), "LiquidityManager::not-pol-option");
        require(vaults[address(optionToken)] == address(0x0), "LiquidityManager::vault-exists");

        bytes32 salt = keccak256(abi.encodePacked(address(optionToken)));

        address vault = liquidityVaultLogic.cloneDeterministic(salt);

        ILiquidityVault(vault).initialize(
            optionToken, uniswapFactory, initialPrice, priceA, priceB
        );

        vaults[address(optionToken)] = vault;

        emit NewVault(address(optionToken), vault, initialPrice, priceA, priceB);
    }

    /**
     @notice Approve a new rebalancer
     @param newRebalancer Address of the rebalancer
     */
    function approveRebalancer(address newRebalancer) external onlyOwner {
        require(!rebalancers[newRebalancer], "LiquidityManager::already-exists");
        rebalancers[newRebalancer] = true;

        emit NewRebalancer(newRebalancer);
    }

    /**
     @notice Revoke access to a rebalancer
     @param rebalancer Address of the rebalancer
     */
    function revokeRebalancer(address rebalancer) external onlyOwner {
        require(rebalancers[rebalancer], "LiquidityManager::not-approved");
        rebalancers[rebalancer] = false;

        emit RevokeRebalancer(rebalancer);
    }

}

