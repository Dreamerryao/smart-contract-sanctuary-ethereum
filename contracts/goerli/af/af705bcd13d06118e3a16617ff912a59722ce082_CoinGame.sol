    // TODO: Request random numbers in batches and have a function to process the list in batches (and a function to get the total length to be processed). Or just request 1 random number, then have a function to batch process dice rolls in order (use the random number as a seed). Then the keeper/bot will go and process everything
    //
    // Its ok if the random number generation isn't evenly distributed, because everyone is rolling the same die and everyone has the same target. It would be different if e.g. everyone had diferent targets, and they rolled a die that was more likely to be in favor of one player over another
    //
    // just generate a bunch of numbers from chainlink/airnode at once.
    // - evenly distributed (should be)
    // - will cost more gas to generate each number in the contract
    //
    // for a batch of numbers to process, a keeper will:
    // - call func to get the total number of pending rng requests (N). this go around we will only process up to that amount, while ppl continue to buy and sell
    // - call func to request N random numbers
    // - call func to apply the N random numbers to the first N qualifiedBuyers in the dequeue
    // - if game not over (check for event saying its over, as well as event saying number of requests processed), repeat until all pending requests at the time we started this iteration is 0.
    //
    // can do this once per hour, maybe more often if I avoid mainnet and use API3 QNRG
    //
    // todo: dApp to visualize the jackpot, pending numbers to process etc. a beautiful well designed website could attract more players
    function requestRandomNumbers(uint256 n) external {
        require(diceRolls.length == 0, "Process existing dice rolls first");

        bytes32 requestId = airnodeRrp.makeFullRequest(
            airnode,
            endpointIdUint256Array,
            address(this),
            sponsorWallet,
            address(this),
            this.fulfillUint256Array.selector,
            // Using Airnode ABI to encode the parameters
            abi.encode(bytes32("1u"), bytes32("size"), n)
        );
        expectingRequestWithIdToBeFulfilled[requestId] = true;
        emit RequestedUint256Array(requestId, n);
    }

    // store the requested random numbers
    function fulfillUint256Array(bytes32 requestId, bytes calldata data) external
    {
        require(
            expectingRequestWithIdToBeFulfilled[requestId],
            "Request ID not known"
        );
        expectingRequestWithIdToBeFulfilled[requestId] = false;
        //uint256[] memory qrngUint256Array = abi.decode(data, (uint256[]));
        diceRolls = abi.decode(data, (uint256[]));
        // Do what you want with `qrngUint256Array` here...
        emit ReceivedUint256Array(requestId, diceRolls);
    }

    // - call func to apply the N random numbers to the first N qualifiedBuyers in the dequeue
    function processDiceRolls(uint256 n) external {
        require(qualifiedBuyers.length() >= n, "Too many random numbers requested");
        require(diceRolls.length == n, "Random numbers generated/applied mismatch");

        for (uint256 i = 0; i < n; i++) {
            address addr = address(uint160(uint256(qualifiedBuyers.popFront())));

            if (diceRolls[i] % 7 == MAGIC_NUMBER) {
                winner = payable(addr);
                emit Winner(winner);
                emit NumberOfDiceRollsProcessed(i + 1);
                return;
            }
        }

        emit NumberOfDiceRollsProcessed(n);
        delete diceRolls;
    }

