pragma solidity ^0.8.0;
import "./myERC721.sol";

contract MyNFT is myERC721 {

    uint256 private tokenId;

    constructor() myERC721("ERC20", "TNFT") {
        tokenId = 0;
    }

    function addItem(address from, string memory _tokenURI) public returns (uint256) {
        uint256 newItemId = tokenId;
        mint(from, newItemId);
        setTokenURI(newItemId, _tokenURI);
        tokenURI(newItemId);

        tokenId += 1;
        return tokenId;
    }

    function removeItem(uint256 _tokenId) public {
        burn(_tokenId);
    }

    function approveToken(address to, uint256 _tokenId) public {
        approve(to, _tokenId);
    }

    function transferToken(address from, address to, uint256 _tokenId) public {
        transferFrom(from, to, _tokenId);
    }

    function isApprovedOrOwner(address spender, uint256 _tokenId) public view returns (bool)  {
        return _isApprovedOrOwner(spender, _tokenId);
    }
}

