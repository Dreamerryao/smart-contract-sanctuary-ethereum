import "../../interfaces/IVestingPool.sol";
import "../TokenRecipientRegistry.sol";

abstract contract TimeskipVestingPool is IERC165, IVestingPool, Ownable, TokenRecipientRegistry {
    using SafeMath for uint256;
    using Counters for Counters.Counter;

    Counters.Counter private _depositIdCounter;

    IERC777 public immutable token;

    struct Deposit {
        address user;
        uint256 amount;
        uint256 start;
        uint256 cliffPeriod;
        uint256 vestingPeriod;
        uint256 unlockDelay;
    }

    // balances by deposits
    mapping(uint256 => Deposit) public deposits;
    // deposit id
    mapping(address => mapping(uint256 => uint256)) private _depositsOfOwnerByIndex;
    // counts by user address
    mapping(address => Counters.Counter) private _accountDepositsCounter;
    // released funds by user
    mapping(address => uint256) public released;

    uint256 private _totalReleased;

    event Deposited(address user, uint256 amount, uint256 id);
    event Released(address user, uint256 amount);

    constructor(
        address tokenAddress_
    ) {
        token = IERC777(tokenAddress_);
    }

    function available() external view returns (uint256) {
        return token.balanceOf(address(this));
    }

    function totalRelease() external view returns (uint256) {
        return _totalReleased;
    }

    function totalDeposits() external view returns (uint256) {
        return _depositIdCounter.current();
    }

    function totalDepositsByOwner(address beneficiary) public view returns (uint256) {
        return _accountDepositsCounter[beneficiary].current();
    }

    function depositsOfOwnerByIndex(address beneficiary, uint256 index) public view returns (uint256) {
        return _depositsOfOwnerByIndex[beneficiary][index];
    }

    // balanceOf returns total amount of tokens owned by beneficiary address
    function balanceOf(address beneficiary) public view returns (uint256) {
        uint256 _totalDeposits = _accountDepositsCounter[beneficiary].current();
        if (_totalDeposits == 0) {
            return 0;
        }

        uint256 balance = 0;
        for (uint i = 0; i < _totalDeposits; i++) {
            Deposit storage deposit = deposits[depositsOfOwnerByIndex(beneficiary, i)];
            balance = balance.add(deposit.amount);
        }

        return balance;
    }

    // returns amount of unlocked tokens for specified deposit
    function unlocked(uint256 depositId) internal view returns (uint256) {
        Deposit storage deposit = deposits[depositId];
        uint256 currentTime = block.timestamp;

        uint256 cliffPeriod = deposit.start + deposit.cliffPeriod;
        if (cliffPeriod > currentTime) {
            return 0;
        }

        uint256 vestPeriod = cliffPeriod + deposit.vestingPeriod;
        if (currentTime > vestPeriod) {
            return deposit.amount;
        } else {
            uint256 partAmount = deposit.amount.div(deposit.vestingPeriod.div(deposit.unlockDelay));
            uint256 timeDiff = currentTime.sub(cliffPeriod);
            uint256 partsUnlocked = timeDiff.div(deposit.unlockDelay);
            uint256 _unlocked = partsUnlocked.mul(partAmount);
            uint256 feeMod = _unlocked.mod(1 ether);
            return _unlocked.sub(feeMod);
        }
    }

    // returns tokens amount available to withdraw for specified beneficiary
    function shares(address beneficiary_) public view returns (uint256) {
        uint256 _totalDeposits = _accountDepositsCounter[beneficiary_].current();
        if (_totalDeposits == 0) {
            return 0;
        }

        uint256 _shares = 0;
        for (uint i = 0; i < _totalDeposits; i++) {
            uint256 depositId = depositsOfOwnerByIndex(beneficiary_, i);
            uint256 unlockedAmount = unlocked(depositId);
            _shares = _shares.add(unlockedAmount);
        }

        return _shares.sub(released[beneficiary_]);
    }

    function _deposit(
        address beneficiary_,
        uint256 amount_,
        uint256 cliffPeriod_,
        uint256 vestingPeriod_,
        uint256 unlockDelay_,
        uint256 timeSkip_
    ) internal virtual {
        uint256 dIndex = _accountDepositsCounter[beneficiary_].current();
        uint256 depositId = _depositIdCounter.current();

        _depositsOfOwnerByIndex[beneficiary_][dIndex] = depositId;
        _accountDepositsCounter[beneficiary_].increment();
        _depositIdCounter.increment();

        uint256 _startTime = timeSkip_ > 0 ? timeSkip_ : block.timestamp;

        Deposit memory deposit = Deposit(
            beneficiary_,
            amount_,
            _startTime,
            cliffPeriod_,
            vestingPeriod_,
            unlockDelay_
        );
        deposits[depositId] = deposit;

        token.operatorSend(_msgSender(), address(this), amount_, "", "");
        emit Deposited(deposit.user, deposit.amount, depositId);
    }

    function withdraw(uint256 amount_) external {
        require(shares(_msgSender()) >= amount_, "Requested withdraw limit exceeds unlocked balance");
        _withdraw(_msgSender(), amount_);
    }

    function withdrawTo(address to_, uint256 amount_) external {
        require(to_ != address(0), "Recipient must be the valid address");
        require(shares(_msgSender()) >= amount_, "Requested withdraw limit exceeds unlocked balance");
        _withdraw(to_, amount_);
    }

    function _withdraw(address recipient_, uint256 amount_) internal {
        token.operatorSend(address(this), recipient_, amount_, "", "");
        released[_msgSender()] = released[_msgSender()].add(amount_);
        _totalReleased = _totalReleased.add(amount_);
        emit Released(_msgSender(), amount_);
    }

    function tokensReceived(
        address operator,
        address,
        address,
        uint256,
        bytes calldata,
        bytes calldata
    ) external virtual {
        require(operator == address(this), "Restricted to contract itself");
    }

    // make it ERC165 compatible
    function supportsInterface(bytes4 interfaceId) public virtual view returns (bool) {
        return interfaceId == type(IERC165).interfaceId ||
        interfaceId == type(IVestingPool).interfaceId ||
        interfaceId == type(IERC777Recipient).interfaceId;
    }
}

