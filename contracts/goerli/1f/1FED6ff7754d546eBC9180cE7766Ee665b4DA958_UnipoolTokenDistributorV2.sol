contract LPTokenWrapper is Initializable {
    using SafeMathUpgradeable for uint256;
    using SafeERC20Upgradeable for IERC20Upgradeable;

    IERC20Upgradeable public uni;

    uint256 private _totalSupply;
    mapping(address => uint256) private _balances;

    function __LPTokenWrapper_initialize(IERC20Upgradeable _uni)
        public
        onlyInitializing
    {
        uni = _uni;
    }

    function totalSupply() public view returns (uint256) {
        return _totalSupply;
    }

    function balanceOf(address account) public view returns (uint256) {
        return _balances[account];
    }

    function stake(uint256 amount) public virtual {
        _totalSupply = _totalSupply.add(amount);
        _balances[msg.sender] = _balances[msg.sender].add(amount);
        uni.safeTransferFrom(msg.sender, address(this), amount);
    }

    function withdraw(uint256 amount) public virtual {
        _totalSupply = _totalSupply.sub(amount);
        _balances[msg.sender] = _balances[msg.sender].sub(amount);
        uni.safeTransfer(msg.sender, amount);
    }
}

contract UnipoolTokenDistributorV2 is LPTokenWrapper, OwnableUpgradeable {
    using SafeMathUpgradeable for uint256;
    using SafeERC20Upgradeable for IERC20Upgradeable;

    struct Period {
        uint256 periodFinish;
        uint256 rewardRate;
        uint256 lastUpdateTime;
        uint256 rewardPerTokenStored;
        uint64 kpiFactor;
        bool isKpiSet;
        address[] rewardAddress;
        uint256[] rewardWeigh;
        mapping(address => uint256) userRewardPerTokenPaid;
        mapping(address => uint256) rewards;
    }

    IDistro public tokenDistro;

    address public rewardDistribution;

    // Last period updated
    uint256 public lastPeriodUpdatedNum;
 
    // Last period added
    uint256 public lastPeriod;

    // Period mapping, first period will be 1
    mapping(uint256 => Period) public periodMapping;

    // oracle address
    address oracle;

    event RewardAdded(uint256 reward, uint256 periodNum);
    event Staked(address indexed user, uint256 amount);
    event Withdrawn(address indexed user, uint256 amount);
    event RewardPaid(address indexed user, uint256 reward);
    event PeriodAdded(uint256 indexed periodID, uint256 periodStart, uint256 periodFinish);
    event KPISet(uint256 indexed periodID, uint256 KPI);

    // bytes4 private constant _PERMIT_SIGNATURE =
    //    bytes4(keccak256(bytes("permit(address,address,uint256,uint256,uint8,bytes32,bytes32)")));
    bytes4 private constant _PERMIT_SIGNATURE = 0xd505accf;
    // bytes4 private constant _PERMIT_SIGNATURE_BRIDGE =
    //    bytes4(keccak256(bytes("permit(address,address,uint256,uint256,bool,uint8,bytes32,bytes32)")));
    bytes4 private constant _PERMIT_SIGNATURE_BRIDGE = 0x8fcbaf0c;

    modifier onlyRewardDistribution() {
        require(
            _msgSender() == rewardDistribution,
            "Caller is not reward distribution"
        );
        _;
    }

    modifier onlyOracle() {
        require(
            _msgSender() == oracle,
            "UnipoolTokenDistributorV2::onlyRewardDistribution: Caller is not oracle"
        );
        _;
    }

    modifier updateReward(address account) {
        uint256 currentPeriod = getCurrentPeriod();
        if(currentPeriod != lastPeriodUpdatedNum) {
            for (uint256 i = lastPeriodUpdatedNum; i < currentPeriod; i++) {
                // update current period
                _updateRewardPeriod(account, i);
            }
            lastPeriodUpdatedNum = currentPeriod;
        }
        _updateRewardPeriod(account, currentPeriod);
        _;
    }

    function _updateRewardPeriod(address account, uint256 periodNum) internal {
        Period storage period = periodMapping[periodNum];
        period.rewardPerTokenStored = rewardPerToken(periodNum);
        period.lastUpdateTime = lastTimeRewardApplicable(periodNum);
        if (account != address(0)) {
            period.rewards[account] = earned(account, periodNum);
            period.userRewardPerTokenPaid[account]= period.rewardPerTokenStored;
        }
    }

    function initialize(
        IDistro _tokenDistribution,
        IERC20Upgradeable _uni
    ) public initializer {
        __Ownable_init();
        __LPTokenWrapper_initialize(_uni);
        tokenDistro = _tokenDistribution;
    }

    function lastTimeRewardApplicable(uint256 periodNum) public view returns (uint256) {
        return MathUpgradeable.min(block.timestamp, periodMapping[periodNum].periodFinish);
    }

    function rewardPerToken(uint256 periodNum) public view returns (uint256) {
        Period storage period = periodMapping[periodNum];
        if (totalSupply() == 0) {
            return period.rewardPerTokenStored;
        }
        return
           period.rewardPerTokenStored.add(
                lastTimeRewardApplicable(periodNum)
                    .sub(period.lastUpdateTime) // This will break if period is not reached yet
                    .mul(period.rewardRate)
                    .mul(1e18)
                    .div(totalSupply())
            );
    }

    function earned(address account, uint256 periodNum) public view returns (uint256) {
        Period storage period = periodMapping[periodNum];
        return
            balanceOf(account)
                .mul(rewardPerToken(periodNum).sub(period.userRewardPerTokenPaid[account]))
                .div(1e18)
                .add(period.rewards[account]);
    }

    // stake visibility is public as overriding LPTokenWrapper's stake() function
    function stake(uint256 amount) public override updateReward(msg.sender) {
        require(amount > 0, "Cannot stake 0");
        super.stake(amount);
        emit Staked(msg.sender, amount);
    }

    function withdraw(uint256 amount) public override updateReward(msg.sender) {
        require(amount > 0, "Cannot withdraw 0");
        super.withdraw(amount);
        emit Withdrawn(msg.sender, amount);
    }

    function exit() external {
        withdraw(balanceOf(msg.sender));
    }

    function _getReward(uint256 periodNum) internal {
        uint256 reward = earned(msg.sender, periodNum);
        if (reward > 0) {
            Period storage period = periodMapping[periodNum];
            require(period.isKpiSet == true, "UnipoolTokenDistributorV2::getReward: KPI factor is not set");
            period.rewards[msg.sender] = 0;
            reward = reward * period.kpiFactor / 10000;
            for (uint256 i = 0; i < period.rewardWeigh.length; i++) {
                if(period.rewardAddress[i] == address(tokenDistro)) {
                    tokenDistro.allocate(msg.sender, reward * period.rewardWeigh[i] / 10000);
                } else {
                    IERC20Upgradeable(period.rewardAddress[i]).safeTransfer(msg.sender, reward * period.rewardWeigh[i] / 10000);
                }
            }
            emit RewardPaid(msg.sender, reward);
        }
    }

    function getReward(uint256[] calldata periodsNum) public updateReward(msg.sender) {
        for(uint256 i = 0; i < periodsNum.length; i++) {
            _getReward(periodsNum[i]);
        }
    }
    function notifyRewardAmount(uint256 reward, uint256 periodNum)
        external
        onlyRewardDistribution
        updateReward(address(0))
    {
        Period storage period = periodMapping[periodNum];
        require(period.periodFinish > block.timestamp, "UnipoolTokenDistributorV2::notifyRewardAmount: Period has finished");

        uint256 remaining = period.periodFinish.sub(period.lastUpdateTime);
        uint256 leftover = remaining.mul(period.rewardRate);
        period.rewardRate = reward.add(leftover).div(remaining);
      
        emit RewardAdded(reward, periodNum);
    }

    function setRewardDistribution(address _rewardDistribution)
        external
        onlyOwner
    {
        rewardDistribution = _rewardDistribution;
    }

    /**
     * @notice method that allows you to stake by using the permit method
     * @param amount the amount to be staked, it has to match the amount that appears in the signature
     * @param permit the bytes of the signed permit function call
     */
    function stakeWithPermit(uint256 amount, bytes calldata permit)
        public
        updateReward(msg.sender)
    {
        require(amount > 0, "Cannot stake 0");
        // we call without checking the result, in case it fails and he doesn't have enough balance
        // the following transferFrom should be fail. This prevents DoS attacks from using a signature
        // before the smartcontract call
        _permit(amount, permit);
        super.stake(amount);
        emit Staked(msg.sender, amount);
    }

    /**
     * @notice function to extract the selector of a bytes calldata
     * @param _data the calldata bytes
     */
    function getSelector(bytes memory _data) private pure returns (bytes4 sig) {
        assembly {
            sig := mload(add(_data, 32))
        }
    }

    /**
     * @notice function to call token permit function, since the token on xDAI has a different implementation
     * we need to distinguish between them
     * @param _amount the quantity that is expected to be allowed
     * @param _permitData the raw data of the call `permit` of the token
     */
    function _permit(uint256 _amount, bytes calldata _permitData)
        internal
        returns (bool success, bytes memory returndata)
    {
        bytes4 sig = getSelector(_permitData);

        if (sig == _PERMIT_SIGNATURE) {
            (
                address owner,
                address spender,
                uint256 value,
                uint256 deadline,
                uint8 v,
                bytes32 r,
                bytes32 s
            ) = abi.decode(
                _permitData[4:],
                (address, address, uint256, uint256, uint8, bytes32, bytes32)
            );
            require(
                owner == msg.sender,
                "UnipoolTokenDistributor: OWNER_NOT_EQUAL_SENDER"
            );
            require(
                spender == address(this),
                "UnipoolTokenDistributor: SPENDER_NOT_EQUAL_THIS"
            );
            require(value == _amount, "UnipoolTokenDistributor: WRONG_AMOUNT");

            /* solhint-disable avoid-low-level-calls avoid-call-value */
            return
                address(uni).call(
                    abi.encodeWithSelector(
                        _PERMIT_SIGNATURE,
                        owner,
                        spender,
                        value,
                        deadline,
                        v,
                        r,
                        s
                    )
                );
        } else if (sig == _PERMIT_SIGNATURE_BRIDGE) {
            (
                address _holder,
                address _spender,
                uint256 _nonce,
                uint256 _expiry,
                bool _allowed,
                uint8 v,
                bytes32 r,
                bytes32 s
            ) = abi.decode(
                _permitData[4:],
                (
                    address,
                    address,
                    uint256,
                    uint256,
                    bool,
                    uint8,
                    bytes32,
                    bytes32
                )
            );
            require(
                _holder == msg.sender,
                "UnipoolTokenDistributor: OWNER_NOT_EQUAL_SENDER"
            );
            require(
                _spender == address(this),
                "UnipoolTokenDistributor: SPENDER_NOT_EQUAL_THIS"
            );
            return
                address(uni).call(
                    abi.encodeWithSelector(
                        _PERMIT_SIGNATURE_BRIDGE,
                        _holder,
                        _spender,
                        _nonce,
                        _expiry,
                        _allowed,
                        v,
                        r,
                        s
                    )
                );
        } else {
            revert("UnipoolTokenDistributor: NOT_VALID_CALL_SIGNATURE");
        }
    }

    // Period related functions

    // TODO does te periods are contiguos, should we add a start period timestamp?
    /**
     * @notice Get current period
     */
    function addPeriod(uint256 periodStart, uint256 periodFinish, address[] memory rewardAddress, uint256[] memory rewardWeigh) public onlyRewardDistribution {
        uint256 lastTimestampPeriod = periodMapping[lastPeriod].periodFinish;
        require(lastTimestampPeriod < periodStart, "UnipoolTokenDistributorV2::addPeriod: New period must have bigger start period time than last period");
        require(periodStart < periodFinish, "UnipoolTokenDistributorV2::addPeriod: New period must have bigger finish period time than start");
        require(rewardAddress.length == rewardWeigh.length, "UnipoolTokenDistributorV2::addPeriod: Reward address and weight length should match");
        
        // Check total wight is 10000
        uint256 totalWeigh;
        for (uint256 i = 0; i < rewardWeigh.length; i++) {
            totalWeigh += rewardWeigh[i];
        }
        require(totalWeigh == 10000, "UnipoolTokenDistributorV2::addPeriod: Total wight should be 10000");

        // Update last period
        lastPeriod++;

        // if this is the first period, it will start on the current timestamp instead of 0
        if (lastTimestampPeriod == 0) {
            lastTimestampPeriod = block.timestamp;
        }

        // Add new period to the period mapping
        Period storage period = periodMapping[lastPeriod];
        period.periodFinish = periodFinish;
        period.lastUpdateTime = periodStart;
        period.rewardAddress = rewardAddress;
        period.rewardWeigh = rewardWeigh;

        emit PeriodAdded(lastPeriod, periodStart, periodFinish);
    }

    /**
     * @notice Get current period, if the last period aleady finished, returns the last period anyways
     * If the periods are always the same will be much easier to find them
     */
    function getCurrentPeriod() public view returns (uint256) {
        for(uint256 i = lastPeriodUpdatedNum; i < lastPeriod; i++ ) {
            if (block.timestamp <= periodMapping[i].periodFinish) {
                if(periodMapping[i].lastUpdateTime <= block.timestamp) {
                    return i;
                } else {
                    return i - 1;
                }
                
            }
        }
        return lastPeriod;
    }

    // Oracle related functions 
    /**
     * @notice Set KPI for a period
     */
    function setKPIperiod(uint256 periodNum, uint64 kpiFactor) public onlyOracle {
        Period storage period = periodMapping[periodNum];
        require(period.periodFinish < block.timestamp, "UnipoolTokenDistributorV2::setKPIperiod: Period hast not finished yet");
        require(period.isKpiSet == false, "UnipoolTokenDistributorV2::setKPIperiod: Kpi factor is already set");
        period.isKpiSet = true;
        period.kpiFactor = kpiFactor;
        emit KPISet(periodNum, kpiFactor);
    }

    function setOracle(address _oracle)
        external
        onlyOwner
    {
        oracle = _oracle;
    }

}

