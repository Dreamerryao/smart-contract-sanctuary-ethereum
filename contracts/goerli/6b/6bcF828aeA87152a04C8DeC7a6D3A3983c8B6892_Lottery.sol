pragma solidity ^0.7.0;

import "SafeMathChainlink.sol";
import "Ownable.sol";

contract Lottery is Ownable {
    address payable[] public players;
    //uint256 public usdEntryFee;
    enum LOTTERY_STATE {
        PREPARING,
        STARTED,
        FINISHED
    }

    LOTTERY_STATE public lottery_state;

    constructor() public {
        lottery_state = LOTTERY_STATE.PREPARING;
    }

    function startLottery() public onlyOwner {
        require(
            lottery_state == LOTTERY_STATE.PREPARING,
            "Can not start a lottery yet"
        );

        lottery_state = LOTTERY_STATE.STARTED;
    }

    function enter() public payable {
        // $ 50 minimum
        require(lottery_state == LOTTERY_STATE.STARTED, "Not yet started");
        require(msg.value > getEntranceFee(), "Not enough ETH");
        players.push(msg.sender);
    }

    function getEntranceFee() public view returns (uint256) {
        //(, int256 price, , , ) = ethUsdPriceFeed.latestRoundData();
        // 18 decimals = 8 decimals as the round price (doc) + 10 decimals
        //uint256 adjustedPrice = uint256(price) * 10**10;
        // 50$ with 18 decimals / price
        //uint256 costToEnter = (usdEntryFee * 10**18) / adjustedPrice;

        uint256 costToEnter = 0.002 * (10**18);
        return costToEnter;
    }

    function finishLottery() public onlyOwner {
        require(lottery_state == LOTTERY_STATE.STARTED, "Not yet started");

        //  Pseudo encoding
        // uint256 pseudo_random_player_idx = uint256(
        //     keccak256(
        //         abi.encodePacked(
        //             //nonce,
        //             msg.sender, // can be predicted
        //             block.difficulty, // can be manipulated by the miners !
        //             block.timestamp // can be predicted
        //         )
        //     )
        // ) % players.length;

        lottery_state == LOTTERY_STATE.FINISHED;
    }
}

