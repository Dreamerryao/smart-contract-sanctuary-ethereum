contract DesignDao {
    using SafeMath for uint;
    uint private nftIndex;
    uint public expireTime;
    uint8 public committeeMembersCounter;
  
    // ["0xAb8483F64d9C6d1EcF9b849Ae677dD3315835cb2","0x4B20993Bc481177ec7E8f571ceCaE8A9e22C02db"]
    struct NFT {
        string uri;
        address owner;
        string title;
        string description;
        uint8 approvedVotes;
        uint8 rejectedVotes;
        uint256 votes;
        bool isApprovedByCommittee;
    }

  
    mapping(address => bool) public Committee;

    mapping(uint => NFT) public nftStore;

    mapping(uint => mapping(address => uint8)) public committeeVoteCheck;

    mapping(uint => mapping(address => bool)) public voteCheck;

    mapping( uint=> uint) public nftTime;

    event CommitteeVote(address _address,uint index, bool decision, NFT _NFT);
    event NftApproved(uint index, NFT _NFT,uint startTime, uint expireTime );
    event PublicVote(address sender, uint index , NFT _NFT);
    event NftAdded(uint index, NFT _nft, uint uploadTime, uint expireTime);
    event Announcewinner(uint index, NFT _NFT,uint timestamp);

    // ["0x71123583902BBb3b6c93045B3bEAC926f26258c7","0x34136d58CB3ED22EB4844B481DDD5336886b3cec","0x0F4Dc5c90b64437B9da458806cFb958404D6B5D8" ]
 

    //  ["Token URI","0xaF09B9535E239AaDcC2B96331341647F84a3537f","this0","des0",0,0,0,false]
    //  ["string1","0x5B38Da6a701c568545dCfcB03FcB875f56beddC4","this1","des1",0,0,0,false]
    //  ["string2","0x5B38Da6a701c568545dCfcB03FcB875f56beddC4","this2","des2",0,0,0,false]
    //  ["string3","0x5B38Da6a701c568545dCfcB03FcB875f56beddC4","this3","des3",0,0,0,false]
    //   ["string5","0x5B38Da6a701c568545dCfcB03FcB875f56beddC4","this5","des5",0,0,0,false]
    modifier onlyComittee() {
        require(
            Committee[msg.sender] == true,
            "No rights to Add Committee Member"
        );
        _;
    }

    // ["0x78731D3Ca6b7E34aC0F824c42a7cC18A495cabaB","0x617F2E2fD72FD9D5503197092aC168c91465E7f2"]
    constructor() {
       Committee[msg.sender] = true;
        expireTime =block.timestamp.add(30 minutes);
        committeeMembersCounter++;
    }


    function addNfts(NFT calldata _NFT) public {
        if(block.timestamp>expireTime){
            uint256 numberOfDays = ((block.timestamp.sub(expireTime)).div( 30 minutes)).add(1);
            expireTime= expireTime.add(uint(30 minutes).mul(numberOfDays));
           _addNfts(_NFT);
        } else {
           _addNfts(_NFT);
        }
    }

    // Internal function
    function _addNfts(NFT calldata _NFT) internal{
            nftStore[nftIndex] = _NFT;
            nftTime[nftIndex]=expireTime;
            emit NftAdded(nftIndex, _NFT, block.timestamp, expireTime);
            nftIndex++;
    }


    function voteByCommittee(uint index, bool decision) public onlyComittee {
        require(block.timestamp<=nftTime[index]," Nft Expired ");

        require(committeeVoteCheck[index][msg.sender] == 0, " Already Voted ");

        require(nftStore[index].owner != address(0), "NFT doesnot exist");
        
        uint votesTarget = Math.ceilDiv(committeeMembersCounter, 2);
        if (decision == true) {
            nftStore[index].approvedVotes++;
            committeeVoteCheck[index][msg.sender] = 1;
            if (nftStore[index].approvedVotes == votesTarget) {
                nftStore[index].isApprovedByCommittee = true;
                 nftTime[index] = expireTime;
                 emit NftApproved(index,nftStore[index],block.timestamp, expireTime );
            }
            emit CommitteeVote(msg.sender,index , decision , nftStore[index]);

        } else {
            nftStore[index].rejectedVotes++;
            committeeVoteCheck[index][msg.sender] = 2;

            if (nftStore[index].rejectedVotes == votesTarget) {
                nftStore[index].isApprovedByCommittee = false;
            }
            emit CommitteeVote(msg.sender,index , decision,nftStore[index] );
        }
    }


    function voteNfts(uint index) public {
        require(
            nftStore[index].isApprovedByCommittee == true,
            "Not Approved by Committee"
        );
        require(block.timestamp<=nftTime[index],"NFT vote time is over");
        require(voteCheck[index][msg.sender] == false, "Already Voted");
        require(index < nftIndex, "Choose Correct NFT to vote ");
        nftStore[index].votes++;
        voteCheck[index][msg.sender] = true;
         emit PublicVote( msg.sender, index ,nftStore[index]);
    }

   function AddComitteMemberBatch(address[] calldata _addresses)
        public
        onlyComittee {
        for (uint8 i; i < _addresses.length; i++) {
            require(
                Committee[_addresses[i]] == false,
                "You are already in Committee"
            );
            Committee[_addresses[i]] = true;
            committeeMembersCounter++;
        }
        }

    function addCommitteeMember(address _address) public onlyComittee {
        require(Committee[_address] == false, "Already member of Committee");
        Committee[_address] = true;
        committeeMembersCounter++;
    }

    function removeNftFromVote(uint index) public onlyComittee {
        nftStore[index].isApprovedByCommittee = false;
    }

}