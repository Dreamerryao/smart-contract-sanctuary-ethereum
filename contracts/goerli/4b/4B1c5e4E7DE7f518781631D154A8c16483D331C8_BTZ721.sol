import {ERC721} from "@openzeppelin/contracts/token/ERC721/ERC721.sol";
import {IERC20} from "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import {SafeERC20} from "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import {SafeMath} from "@openzeppelin/contracts/utils/math/SafeMath.sol";
import {IBTZNFT} from "./IBTZNFT.sol";

    contract BTZ721 is ERC721, IBTZNFT {modifier onlyCreator(uint256 tokenId) {
        require(
            tokenIdMatchesCreator(tokenId, _msgSender()),
            "BTZ: message sender does not own token id"
        );
        _;
    }

    using SafeERC20 for IERC20;
    using SafeMath for uint256;

    /*=========== EIP-712 types ============*/

    struct EIP712Domain {
        string name;
        string version;
        uint256 chainId;
        address verifyingContract;
    }

    //keccak256("EIP712Domain(string name,string version,uint256 chainId,address verifyingContract)");
    bytes32 public constant EIP712DOMAIN_TYPEHASH =
        0x8b73c3c69bb8fe3d512ecc4cf759cc79239f7b179b0ffacaa9a75d522b39400f;

    //keccak256("BTZOrder(uint256 tokenId,uint256 nonce,address currency,uint256 minimumPrice,address payee,uint256 kickoff,uint256 deadline,address recipient,bytes data)");
    bytes32 public constant MINT_ORDER_TYPEHASH =
        0xc5107f166635925e9971bf0758f6a6a30efbed7f0e1b72948dce5b6def2f7717;

    // Mapping from bytes32 to boolean to decide if order hash is cancelled or not
    mapping(bytes32 => bool) private _cancelledOrders;

    // The bitmask to apply to a token ID to get the creator short address
    uint256 public constant TOKEN_ID_CREATOR_SHORT_IDENTIFIER_BITMASK =
        0x0000000000000000000000000000000000000000FFFFFFFFFFFFFFFFFFFFFFFF;

    // The EIP-712 Domain separator for this contract
    // solhint-disable-next-line private-vars-leading-underscore, var-name-mixedcase
    bytes32 private DOMAIN_SEPARATOR;

    //when we call functions on _thisAsOperator we can change _msgSender() to be this contract, making sure isApprovedForAll passes when transfering tokens
    //see {IERC721-safeTransferFrom}
    BTZ721 private _thisAsOperator;

    constructor() ERC721("BTZ721", "BTZ"){
        uint256 chainId;
        // solhint-disable-next-line
        assembly {
            chainId := chainid()
        }
        DOMAIN_SEPARATOR = _hash(
            EIP712Domain({
                name: "BTZ721",
                version: "1",
                chainId: chainId,
                verifyingContract: address(this)
            })
        );

        _thisAsOperator = BTZ721(address(this));
    }

    /**
     * @dev See {IERC721-isApprovedForAll}.
     */
    function isApprovedForAll(address owner, address operator)
        public
        view
        virtual
        override
        returns (bool)
    {
        if (operator == address(this)) {
            return true;
        }

        return ERC721.isApprovedForAll(owner, operator);
    }

    function supportsInterface(bytes4 interfaceId)
        public
        view
        virtual
        override(ERC721)
        returns (bool)
    {
        return
            interfaceId == type(IBTZNFT).interfaceId ||
            ERC721.supportsInterface(interfaceId);
    }

    /*============================ EIP-712 encoding functions ================================*/

    /**
     * @dev see https://eips.ethereum.org/EIPS/eip-712#definition-of-domainseparator
     */
    function _hash(EIP712Domain memory eip712Domain)
        internal
        pure
        returns (bytes32)
    {
        return
            keccak256(
                abi.encode(
                    EIP712DOMAIN_TYPEHASH,
                    keccak256(bytes(eip712Domain.name)),
                    keccak256(bytes(eip712Domain.version)),
                    eip712Domain.chainId,
                    eip712Domain.verifyingContract
                )
            );
    }

    /**
     * @dev see https://eips.ethereum.org/EIPS/eip-712#definition-of-encodedata
     */
    function _hash(BTZOrder memory order)
        internal
        pure
        returns (bytes32 hash)
    {
        require(order.tokenAmount == 1, "BTZ: ERC-721 tokenAmount must be 1");
        return
            keccak256(
                abi.encode(
                    MINT_ORDER_TYPEHASH,
                    order.tokenId,
                    order.nonce,
                    order.tokenAmount,
                    order.currency,
                    order.minimumPrice,
                    order.expires,
                    order.taker,
                    keccak256(abi.encode(order.fees))
                )
            );
    }

    /*========================================================================================*/

    /**
     * @dev verifies a signed BTZOrder against its token ID for validity
     * also checks that the order is still valid
     * throws errors on invalid order
     */
    function validateOrder(
        BTZOrder memory order,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) public override view returns (address) {
        bytes32 orderHash = _hash(order);
        // EIP712 encoded
        bytes32 digest =
            keccak256(
                abi.encodePacked("\x19\x01", DOMAIN_SEPARATOR, orderHash)
            );

        address signer = ecrecover(digest, v, r, s);

        require(
            tokenIdMatchesCreator(order.tokenId, signer),
            "BTZ: message sender does not own token id"
        );

        require(
            _cancelledOrders[orderHash] != true,
            "BTZ: order cancelled"
        );

        return signer;
    }

    /**
     * @notice Call this function to buy a not yet minted NFT
     * @param order The BTZOrder signed by the NFT creator
     * @param taker The address that will receive the newly minted NFT
     * @param buyAmount Amount that taker wants to buy
     * @param v The v portion of the secp256k1 order signature
     * @param r The r portion of the secp256k1 order signature
     * @param s The s portion of the secp256k1 order signature
     */
    function buy(
        BTZOrder calldata order,
        address taker,
        uint256 buyAmount,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) public override payable {
        uint256 minimumPrice = calculateMinimumPrice(order, buyAmount);
        uint256 netTokenPrice = order.minimumPrice;
        if(msg.value > minimumPrice) {
            netTokenPrice = netTokenPrice.add(msg.value - minimumPrice);
        }

        require(
            order.expires <= block.timestamp,
            "BTZ: order already expired"
        );

        //address 0 as recipient in the order means anyone can claim it
        if (order.taker != address(0)) {
            require(
                taker == order.taker,
                "BTZ: taker does not match order"
            );
        }

        address signer = validateOrder(order, v, r, s);

        if (order.currency == address(0)) {
            require(
                msg.value >= minimumPrice,
                "BTZ: transaction value under minimum price"
            );

            (bool success, ) = signer.call{value: netTokenPrice}("");
            require(success, "Transfer failed due to nft price transfer");

            for(uint i = 0; i < order.fees.length; i++) {
                BTZFee memory fee = order.fees[i];
                (bool feeSuccess, ) = fee.recipient.call{value: fee.amount}("");        
                require(feeSuccess, string(abi.encodePacked("Transfer failed due to fee transfer to ", fee.recipient)));
            }

        } else {
            IERC20 token = IERC20(order.currency);
            token.safeTransferFrom(msg.sender, signer, netTokenPrice);

            for (uint i = 0; i < order.fees.length; i++) {
                BTZFee memory fee = order.fees[i];
                token.safeTransferFrom(msg.sender, fee.recipient, fee.amount);
            }
        }

        _mint(signer, order.tokenId);
        _thisAsOperator.safeTransferFrom(signer, taker, order.tokenId);
    }

    /**
     * @notice cancel given order
     * @param order The BTZOrder signed by the NFT creator
     */
    function cancelOrder(
        BTZOrder calldata order
    )
        public
        override
        onlyCreator(order.tokenId)
    {
        _cancelledOrders[_hash(order)] = true;
    }

    /**
     * @notice Call this function to find fees included minimum price of an order 
     * @param order The BTZOrder signed by the NFT creator
     */
    function calculateMinimumPrice(BTZOrder memory order, uint256 buyAmount) public pure override returns (uint256) {
        require(
            buyAmount == 1,
            "BTZ: buy amount must be 1 for ERC-721"
        );

        uint256 minimumPrice = order.minimumPrice;
        for (uint i = 0; i < order.fees.length; i++) {
           minimumPrice = minimumPrice.add(order.fees[i].amount);
        }

        return minimumPrice;
    }

    /**
     * @dev See {IERC721Metadata-uri}.
     */
    function tokenURI(uint256 tokenId)
        public
        pure
        override
        returns (string memory)
    {
        /*
            extract the JSON metadata sha1 digest from `tokenId` and convert to hex string
            */
        bytes32 value = bytes32(tokenId >> 96);
        bytes memory alphabet = "0123456789abcdef";

        bytes memory sha1Hex = new bytes(40);
        for (uint256 i = 0; i < 20; i++) {
            sha1Hex[i * 2] = alphabet[(uint8)(value[i + 12] >> 4)];
            sha1Hex[1 + i * 2] = alphabet[(uint8)(value[i + 12] & 0x0f)];
        }

        //with IPFS we can retrieve a SHA1 hashed file with a CID of the following format : "f01551114{_sha1}"
        //only works if the file has been uploaded with "ipfs add --raw-leaves --hash=sha1 <path>"
        // see {#../docs/lazyminting.md#Notes-on-IPFS-compatibility}
        return string(abi.encodePacked("ipfs://", "f01551114", sha1Hex));
    }


    /**
     * @dev see "../docs/lazyminting.md" or {computeTokenId})
     */
    function tokenIdMatchesCreator(uint256 tokenId, address creatorAddress)
        internal
        pure
        returns (bool isCreator)
    {
        uint160 metadataSHA1 = (uint160)(tokenId >> 96);

        uint256 tokenSpecificCreatorIdentifier =
            (uint256)(keccak256(abi.encode(metadataSHA1, creatorAddress)));

        return
            tokenId & TOKEN_ID_CREATOR_SHORT_IDENTIFIER_BITMASK ==
            (tokenSpecificCreatorIdentifier >> 160) &
                TOKEN_ID_CREATOR_SHORT_IDENTIFIER_BITMASK;
    }
}

