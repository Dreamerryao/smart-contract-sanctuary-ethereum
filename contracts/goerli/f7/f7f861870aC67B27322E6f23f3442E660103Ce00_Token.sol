/// @title Xord ERC20 Token contract
contract Token is Owned, ERC20, MerkleProofVerify {
    /*//////////////////////////////////////////////////////////////
                                VARIABLES
    //////////////////////////////////////////////////////////////*/

    /// @dev Is claiming airdrop open or not.
    bool public claimFlag;

    /// @dev Whitelisted address to interact with token.
    mapping(address => bool) public whitelisted;

    /// @dev Approvals given to address to interact with token.
    mapping(address => bool) public ownerApprovals;

    // root -> beneficiary -> claimedOrNot
    /// @dev Claim flag for an airdrop for a specific root.
    mapping(bytes32 => mapping(address => bool)) public claims;

    /*//////////////////////////////////////////////////////////////
                                EVENTS
    //////////////////////////////////////////////////////////////*/

    /// @dev Event emitted when new tokens minted.
    event Minted(address beneficiary, uint256 amount);

    /// @dev Event emitted when airdrop is claimed.
    event Claimed(address benefiary, uint256 amount, bytes32 root);

    /// @dev Event emitted when airdrop done via transfer.
    event AirdropTransfer(address[] accounts, uint256[] amounts);

    /// @dev Event emitted when address is whitelisted.
    event Whitelisted(address beneficiary, bool status);

    /// @dev Event emitted when address is approved by owner.
    event Approved(address beneficiary, bool status);

    /// @dev Event emitted when claim flag is changed by owner.
    event SetClaimFlag(bool status);

    /*//////////////////////////////////////////////////////////////
                                MODIFIERS
    //////////////////////////////////////////////////////////////*/

    /// @dev only whitelisted address can access function.
    modifier onlyWhitelisted() virtual {
        require(whitelisted[msg.sender], "UNAUTHORIZED");
        _;
    }

    /// @dev only approved address can access function.
    modifier onlyApproved() virtual {
        require(ownerApprovals[msg.sender], "UNAUTHORIZED");
        _;
    }

    /// @dev only let claim airdrop when claimFlag true.
    modifier onlyClaimOpen() virtual {
        require(claimFlag, "CLAIM_NOT_OPEN");
        _;
    }

    /*//////////////////////////////////////////////////////////////
                                CONSTRUCTOR
    //////////////////////////////////////////////////////////////*/

    /// @notice Initializes `ERC20` token.
    /// @param name_ string - name of token.
    /// @param symbol_ string - symbol of token.
    /// @param owner_ address - address of owner.
    constructor(
        string memory name_,
        string memory symbol_,
        address owner_
    ) ERC20(name_, symbol_) Owned(owner_) {
        require(owner_ != address(0), "ZERO_ADDRESS");
    }

    /*//////////////////////////////////////////////////////////////
                        NON-VIEW/PURE FUNCTIONS
    //////////////////////////////////////////////////////////////*/

    /// @inheritdoc ERC20
    function transfer(address to, uint256 amount)
        public
        override
        onlyWhitelisted
        onlyApproved
        returns (bool)
    {
        // Todo: ask danial bhai about `to` check?
        return super.transfer(to, amount);
    }

    /// @inheritdoc ERC20
    function approve(address spender, uint256 amount)
        public
        override
        onlyWhitelisted
        onlyApproved
        returns (bool)
    {
        require(whitelisted[spender], "SPENDER_NOT_WHITELISTED");
        return super.approve(spender, amount);
    }

    /// @dev Mints `_amount` of token and transfers to caller if exists in merkle root.
    /// Emits a {Claimed} event.
    /// @param index_ uint256 index of account.
    /// @param amount_ uint256 amount to be claimed.
    /// @param proof_ bytes32[] proof of merkle root.
    /// Note - `index_`, `amount_` and `proof_` must be valid from merkle root.
    function claimAirdrop(
        uint256 index_,
        uint256 amount_,
        bytes32[] calldata proof_
    ) external onlyWhitelisted onlyApproved onlyClaimOpen {
        bytes32 leaf_ = keccak256(abi.encodePacked(index_, _msgSender(), amount_));
        require(verify(proof_, leaf_), "INVALID_PROOF");
        require(!claims[root][_msgSender()], "ALREADY_CLAIMED");

        claims[root][_msgSender()] = true;

        emit Claimed(_msgSender(), amount_, root);

        _mint(_msgSender(), amount_);
    }

    /// @notice Airdrops(mints) `amounts_` ERC20 tokens to `accounts_`.
    /// Emits a {AirdropTransfer} event.
    /// @param accounts_ address[] - addresses of beneficiary to receive airdrop tokens.
    /// @param amounts_ uint256[] - amounts of tokens to airdrop.
    /// Note - Only callable by Owner.
    function airdropTransfer(address[] calldata accounts_, uint256[] calldata amounts_)
        external
        onlyOwner
    {
        uint256 accountsLen_ = accounts_.length;
        require(accountsLen_ != 0 && accountsLen_ == amounts_.length, "INVALID_LENGTH");

        for (uint256 i; i < accountsLen_; ) {
            mint(accounts_[i], amounts_[i]);

            unchecked {
                ++i;
            }
        }

        emit AirdropTransfer(accounts_, amounts_);
    }

    /// @notice Mints `amount_` ERC20 tokens to `account_`.
    /// Emits a {Minted} event.
    /// @param account_ address - address of beneficiary to receive tokens.
    /// @param amount_ uint256 - amount of tokens to receive.
    /// Note - Only callable by Owner.
    function mint(address account_, uint256 amount_) public onlyOwner {
        require(amount_ != 0, "ZERO_AMOUNT");
        emit Minted(_msgSender(), amount_);
        _mint(account_, amount_);
    }

    /// @notice Sets `status_` for `account_` to be whitelisted or not.
    /// Emits a {Whitelisted} event.
    /// @param account_ address - address of beneficiary to be whitelisted.
    /// @param status_ bool - status of whitelist.
    /// Note - Only callable by Owner.
    function setWhitelisted(address account_, bool status_) external onlyOwner {
        require(account_ != address(0), "ZERO_ADDRESS");
        emit Whitelisted(account_, status_);
        whitelisted[account_] = status_;
    }

    /// @notice Sets `status_` for `account_` to be approved or not.
    /// Emits a {Approved} event.
    /// @param account_ address - address of beneficiary to be approved.
    /// @param status_ bool - status of approved.
    /// Note - Only callable by Owner.
    function setOwnerApproval(address account_, bool status_) external onlyOwner {
        require(account_ != address(0), "ZERO_ADDRESS");
        emit Approved(account_, status_);
        ownerApprovals[account_] = status_;
    }

    /// @notice Sets `status_` for claimFlag.
    /// Emits a {SetClaimFlag} event.
    /// @param status_ bool - status of claim flag.
    /// Note - Only callable by Owner.
    function setClaimflag(bool status_) external onlyOwner {
        emit SetClaimFlag(status_);
        claimFlag = status_;
    }

    /// @dev Sets the merkle root.
    /// Emits a {RootSet} event.
    /// @param root_ - markle root.
    /// @param proofHash_ - ipfs hash containing json file of proofs.
    /// Requirements:
    /// - caller must be {owner}.
    /// - `root_` must be valid.
    /// - If root is being changed make sure to add any previous outstanding claims of whitelist
    ///   addresses otherwise they won't be able to claim them.
    function setRoot(bytes32 root_, string calldata proofHash_) external onlyOwner {
        _setRoot(root_, proofHash_);
    }
}

