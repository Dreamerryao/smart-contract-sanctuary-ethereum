pragma solidity ^0.8.10;
import './IMetadataRenderer.sol';
import './Base64.sol';
import './Conversion.sol';
import {MetadataRenderAdminCheck} from './MetadataRenderAdminCheck.sol';

contract ZequencerMetadataRenderer is IMetadataRenderer, MetadataRenderAdminCheck {

    struct MetadataURIInfo {
        string name;
        string description;
        string baseAppURI;
        string baseImageURI;
        string contractURI;
    }

    /// @notice NFT metadata by contract
    mapping(address => MetadataURIInfo) public metadataBaseByContract;

    function tokenURI(uint256 tokenId) external view returns (string memory) {
        return string(abi.encodePacked(
          "data:application/json;base64,",
          Base64.encode(bytes(
            abi.encodePacked(
              "{",
              "\"name\": \"",
              tokenName(msg.sender, tokenId), "\", ", 
              trackMetadata(msg.sender),
              uniqueMetadata(msg.sender, tokenId),
              "}"
            )))));
    }

    function tokenName(address from, uint256 tokenId) internal view returns (string memory) {
        MetadataURIInfo memory data = metadataBaseByContract[msg.sender];

        return string( 
          abi.encodePacked(
            data.name,
            " (#", Conversion.uint2str(tokenId), ")"
            ));
    }

    function trackMetadata(address from) internal view returns (string memory) {
        MetadataURIInfo memory data = metadataBaseByContract[msg.sender];
        return string( 
          abi.encodePacked(
              "\"description\": \"", data.description, "\", "
                           ));
    }

    function uniqueMetadata(address from, uint256 tokenId) internal view returns (string memory) {
        MetadataURIInfo memory data = metadataBaseByContract[msg.sender];
        return string( 
          abi.encodePacked(
            "\"image\": \"", data.baseImageURI, Conversion.uint2str(tokenId), "\", ",
            "\"image_url\": \"", data.baseImageURI, Conversion.uint2str(tokenId),  "\", ",
            "\"animation_url\": \"", data.baseAppURI, Conversion.uint2str(tokenId), "\""
           ));
    }

    function contractURI() external view returns (string memory) {
        string memory uri = metadataBaseByContract[msg.sender].contractURI;
        if (bytes(uri).length == 0) revert();
        return uri;
    }

    function initializeWithData(bytes memory data) external {
        // called everytime a new drop collection (from zequencer) is created
        (string memory name, string memory description, string memory baseAppURI, string memory baseImageURI, string memory initialContractURI) = abi
            .decode(data, (string, string, string, string, string));

        metadataBaseByContract[msg.sender] = MetadataURIInfo({
            name: name,
            description: description,
            baseAppURI: baseAppURI,
            baseImageURI: baseImageURI,
            contractURI: initialContractURI
            }
        );
        
    }

}