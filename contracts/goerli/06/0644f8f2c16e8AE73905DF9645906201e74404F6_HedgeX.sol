contract HedgeX {
    address public owner;
    uint256 public protocol_earnings;
    AbstractPyth pyth;
    ISwapRouter public immutable swapRouter;
    IERC20 private hdgx;
    IUniswapV3Factory public constant unifactory = IUniswapV3Factory(0x1F98431c8aD98523631AE4a59f267346ea31F984);
    address public hedgexLiqManagerAddress;
    IHedgexLiqManager public hedgexLiqManager;
    uint256 initialLiqThreshold = 1000000;
    bool public initialLiquidityProvided = false;
    int24 private constant MIN_TICK = -161160;
    int24 private constant MAX_TICK = 184200;
    int24 private constant TICK_SPACING = 60;
    address public pool_address;
    address public HEDGEX;
    address public constant WETH9 = 0xB4FBF271143F4FBf7B91A5ded31805e42b2208d6;
    IWETH9 public weth  = IWETH9(WETH9);
    uint24 public constant poolFee = 3000;

    uint makerOrderIDCount;
    uint takerOrderIDCount;
    mapping(uint => MakerOrder) public makerOrdersByID;
    mapping(uint => TakerOrder) public takerOrdersByID;
    mapping(bytes32 => MakerOrder[]) public makerOrdersByFeedID;
    mapping(uint => bool) public makerOrderIDMatched;
    mapping(uint => bool) public takerOrderIDSettled;
    mapping(uint => SettleOrder) public takerSettleOrder;
    mapping(uint => uint) public makers_taker_ID;
    mapping(address => MakerOrder[]) public userMakerOrders;
    mapping(address => TakerOrder[]) public userTakerOrders;
    mapping(address => uint256) public userSettlerFeesEarned;
    struct MakerOrder{
        uint order_ID;
        address user;
        uint256 ethPosted;
        bytes32 feedID;
        uint256 lockUpPeriod;
        int64 ratio;
        bool outlook;
        int64 priceTarget;
        PriceThreshold threshold;
    }
    struct TakerOrder{
        uint order_ID;
        address user;
        uint256 ethPosted;
        uint256 timeStampTaken;
        uint makerOrder_ID;
        PythStructs.Price lockPrice;
        bool outlook;
    }
    struct SettleOrder{
        uint makerOrderID;
        uint takerOrderID;
        address maker;
        address taker;
        address winner;
        address settler;
        uint256 makerFees;
        uint256 settlerFees;
        uint256 winnerPayout;
        uint256 timeStampSettled;
        PythStructs.Price closingPrice;
    }
    struct PriceThreshold{
        int64 lowerBound;
        int64 upperBound;
    }

    event Taken(address _taker, uint _maker_order_ID, uint256 lockUpEnds);
    event Received(address, uint);
    event SwappedForHedgex(uint amtInput, uint amtOutput, uint256 timestamp);
    event SwapFailure(uint256 _timestamp);
    event InitialLiquidityProvided(uint tokenId,uint128 liquidity,uint amount0,uint amount1);

    constructor(address _pyth, address _liquidityManager, address _hedgexTokenAddress){
        pyth = AbstractPyth(_pyth);
        swapRouter = ISwapRouter(0xE592427A0AEce92De3Edee1F18E0157C05861564);
        hedgexLiqManagerAddress = _liquidityManager;
        hedgexLiqManager = IHedgexLiqManager(_liquidityManager);
        HEDGEX = _hedgexTokenAddress;
        pool_address = unifactory.getPool(_hedgexTokenAddress, WETH9, 3000);
        // weth = IWETH9(0xB4FBF271143F4FBf7B91A5ded31805e42b2208d6);
        // HEDGEX = _hedgexTokenAdress;
        // hdgx = IERC20(_hedgexTokenAdress);
        owner = msg.sender;
        protocol_earnings = 0;
        makerOrderIDCount = 0;
        takerOrderIDCount = 0;
    }

    function ownerSetLiqManagerAddress(address _liqManagerAddress) public{
        require(msg.sender == owner, "Owner only.");
        hedgexLiqManagerAddress = _liqManagerAddress;
        hedgexLiqManager = IHedgexLiqManager(_liqManagerAddress);
    }

    function makeOrder(bytes32 feedID, uint256 lockUpPeriod, int64 ratio, bool outlook, int64 priceTarget, int64 lowerBound, int64 upperBound)payable public{
        require(lockUpPeriod>100,"Lock-up Period must be greater than 100 Minutes...");
        require(ratio!=0,"Ratio can't be 0!");
        require((ratio>=100 || ratio <=-100),"Ratio invalid!");
        MakerOrder memory newOrder = MakerOrder(makerOrderIDCount+1,msg.sender,msg.value,feedID,lockUpPeriod,ratio,outlook,priceTarget,PriceThreshold(lowerBound,upperBound));
        makerOrdersByID[makerOrderIDCount+1] = newOrder;
        userMakerOrders[msg.sender].push(newOrder);
        makerOrdersByFeedID[feedID].push(newOrder);
        makerOrderIDCount++;
    }

    function takeOrder(uint makerOrderID, bytes32 feedID, bytes[] calldata priceUpdateData) payable public{
        require(msg.sender!=makerOrdersByID[makerOrderID].user,"Restriction: No Wash Trading");
        require(makerOrderIDMatched[makerOrderID] == false, "TakeOrder has already been created for this ID!");
        pyth.updatePriceFeeds{value: 1 wei}(priceUpdateData);
        PythStructs.Price memory priceAssetUSD = pyth.getPriceNoOlderThan(feedID,100000000);
        MakerOrder memory makerOrder = makerOrdersByID[makerOrderID];
        require((makerOrder.threshold.lowerBound<priceAssetUSD.price) && (priceAssetUSD.price<makerOrder.threshold.upperBound), "Actual Oracle price doesn't fall within bounds of maker order!");
        require(msg.value==amtRequiredToTake(makerOrder.order_ID),"Amount supplied insufficient. Check Docs for more info + help!");
        TakerOrder memory newTakerOrder= TakerOrder(takerOrderIDCount+1,msg.sender,msg.value,block.timestamp,makerOrderID,priceAssetUSD,!(makerOrder.outlook));
        takerOrdersByID[takerOrderIDCount+1] = newTakerOrder;
        userTakerOrders[msg.sender].push(newTakerOrder);
        makerOrderIDMatched[makerOrder.order_ID] = true;
        makers_taker_ID[makerOrderID] = takerOrderIDCount+1;
        takerOrderIDCount++;
        emit Taken(msg.sender, makerOrder.order_ID, block.timestamp + makerOrder.lockUpPeriod);
    }

    function amtRequiredToTake(uint makerOrderID) public view returns(uint256 amtRequired){
        MakerOrder memory makerOrder = makerOrdersByID[makerOrderID];
        if(makerOrder.ratio<0){
            //i.e. maker ratio is -400, taker amt should be MakerOrder.ethPosted / (400/100)
            amtRequired = (makerOrder.ethPosted / negate64(makerOrder.ratio)) / 100;
        }
        else{
             //i.e. maker ratio is +400, taker amt should be MakerOrder.ethPosted / (400/100)
            amtRequired = (makerOrder.ethPosted * uint64(makerOrder.ratio)) / 100;
        }
    }   

    function settleOrder(uint takerOrder_ID,bytes[] calldata priceUpdateData) public  {
        require( block.timestamp > (takerOrdersByID[takerOrder_ID].timeStampTaken + makerOrdersByID[takerOrdersByID[takerOrder_ID].makerOrder_ID].lockUpPeriod), "Lock-up Period has not finished. Please wait to settle.");
        require(takerOrderIDSettled[takerOrder_ID] == false, "TakerOrder has already been settled!");
        TakerOrder memory taker = takerOrdersByID[takerOrder_ID];
        MakerOrder memory maker = makerOrdersByID[taker.makerOrder_ID];    
        pyth.updatePriceFeeds{value: 1 wei}(priceUpdateData);
        PythStructs.Price memory closingPrice = getPriceNoOlderThan(maker.feedID, 100000000);
        address payable winnerAddress;
        if(closingPrice.price > maker.priceTarget){
            if(maker.outlook==true){
                winnerAddress = payable(maker.user);
            }
            else if(maker.outlook == false){
                winnerAddress = payable(taker.user);
            }
        }
        else if(closingPrice.price < maker.priceTarget){
             if(maker.outlook==true){
                winnerAddress = payable(taker.user);
            }
            else if(maker.outlook == false){
                winnerAddress = payable(maker.user);
            }
        }
        else{
            // Handle Tie Scenario
        }
        winnerAddress.transfer((maker.ethPosted + taker.ethPosted) * 975 / 1000);
        payable(msg.sender).transfer( (maker.ethPosted + taker.ethPosted) * 5 / 1000);
        payable(maker.user).transfer((maker.ethPosted + taker.ethPosted) * 1 / 100);
        takerOrderIDSettled[takerOrder_ID] = true;
        takerSettleOrder[takerOrder_ID] = SettleOrder( 
            maker.order_ID,
            taker.order_ID,
            maker.user,
            taker.user,
            winnerAddress,
            msg.sender,
            (maker.ethPosted + taker.ethPosted) * 1 / 100,
             (maker.ethPosted + taker.ethPosted) * 5 / 1000,
            (maker.ethPosted + taker.ethPosted) * 975 / 1000,
            block.timestamp,
            closingPrice
        );
        userSettlerFeesEarned[msg.sender]+=  (maker.ethPosted + taker.ethPosted) * 5 / 1000;
        protocol_earnings += (maker.ethPosted + taker.ethPosted) * 1 / 100;
        if(protocol_earnings >= initialLiqThreshold){
            if(initialLiquidityProvided==false){
                provideLiquidity();
            }
        }
        if(initialLiquidityProvided == true){
            if(hdgx.balanceOf(pool_address) > 5 *(10**16)){
                swapExactInputSingle(((maker.ethPosted + taker.ethPosted) * 1 / 100) * 75 / 100);
            }
        }
    }

    function getUserMakerOrdersLength(address _user) public view returns(uint ){
        return userMakerOrders[_user].length;
    }
    function getUserTakerOrdersLength(address _user) public view returns(uint ){
        return userTakerOrders[_user].length;
    }
    function makerOrdersByFeedIDLength(bytes32 feedID) public view returns(uint ){
        return makerOrdersByFeedID[feedID].length;
    }

    //Pyth Integration Block
    function updateOraclePrice(bytes[] calldata priceUpdateData) public payable  {
        pyth.updatePriceFeeds{value: 2 wei}(priceUpdateData);    
    }

    function getPriceNoOlderThan(bytes32 feedID, uint256 age)public view returns(PythStructs.Price memory){
      return pyth.getPriceNoOlderThan(feedID,age);
    }
    //End Pyth Integration Block
    function negate64(int64 _i) internal pure returns(uint64) {
        return uint64(-_i);
    }

    function swapExactInputSingle(uint256 amountIn) internal returns(uint256 amountOut){
        weth.deposit{value:amountIn}();
        TransferHelper.safeApprove(WETH9, address(swapRouter), amountIn);
        ISwapRouter.ExactInputSingleParams memory params =
            ISwapRouter.ExactInputSingleParams({
                tokenIn: WETH9,
                tokenOut: HEDGEX,
                fee: poolFee,
                recipient: address(this),
                deadline: block.timestamp,
                amountIn: amountIn,
                amountOutMinimum: 0,
                sqrtPriceLimitX96: 0
            });

        amountOut = swapRouter.exactInputSingle(params);
        emit SwappedForHedgex(amountIn , amountOut, block.timestamp);
        // try swapRouter.exactInputSingle(params) returns (uint256 amountOut){
        //     // return amountOut;

        // }catch{
        //     emit SwapFailure(block.timestamp);

        // }
    }

    function provideLiquidity() internal{
        require(initialLiquidityProvided == false, "Initial liquidity has already been provided." );
        require(protocol_earnings >=  initialLiqThreshold,  "Threshold to provide liquidity not yet met." );
        weth.deposit{value:100000000000000000}();
        TransferHelper.safeApprove(WETH9, address(hedgexLiqManagerAddress), 100000000000000000);
        TransferHelper.safeTransferFrom(WETH9, address(this), address(hedgexLiqManagerAddress), 100000000000000000);
        hedgexLiqManager.mintNewPosition(100000000000000000, 100000000000000000);
        initialLiquidityProvided = true;
        // emit InitialLiquidityProvided(tokenId,liquidity,amount0,amount1);

    }

   receive() external payable {
        emit Received(msg.sender, msg.value);
    }
}

