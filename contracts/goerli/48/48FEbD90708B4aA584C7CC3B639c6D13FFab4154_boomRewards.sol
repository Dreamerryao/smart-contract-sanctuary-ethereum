abstract contract Context {
    function _msgSender() internal view virtual returns (address) {
        return msg.sender;
    }

    function _msgData() internal view virtual returns (bytes calldata) {
        return msg.data;
    }
}

abstract contract Ownable is Context {
    address private _owner;

    event OwnershipTransferred(address indexed previousOwner, address indexed newOwner);

    constructor () {
        address msgSender = _msgSender();
        _owner = msgSender;
        emit OwnershipTransferred(address(0), msgSender);
    }

    function owner() public view returns (address) {
        return _owner;
    }

    modifier onlyOwner() {
        require(_owner == _msgSender(), "Ownable: caller is not the owner");
        _;
    }

    function renounceOwnership() public virtual onlyOwner {
        emit OwnershipTransferred(_owner, address(0));
        _owner = address(0);
    }

    function transferOwnership(address newOwner) public virtual onlyOwner {
        require(newOwner != address(0), "Ownable: new owner is the zero address");
        emit OwnershipTransferred(_owner, newOwner);
        _owner = newOwner;
    }
}

contract boomRewards is Ownable {
  using SafeMath for uint256;
  using Address for address;

  IERC20 public token;

  uint256 public rewardsClaimTimeSeconds = 60 * 60 * 24; // 24 hours

  struct StakerData {
        uint256 totalStaked;
        uint256 lastStakedTimestamp;
        uint256 reward;
    }

  mapping(address => StakerData) public stakers;

  uint8 private constant _decimals = 18;

  event SendETHRewards(address to, uint256 amountETH);
  event StakedTokens(address from, uint256 amountTokens);
  event UnstakedTokens(address to, uint256 amountTokens);

  constructor(IERC20 _token) {
    token = IERC20(_token);
  }

  /* ========== View Functions ========== */
  function canClaimRewards(address user) public view returns (bool) {
    return
      block.timestamp > stakers[user].lastStakedTimestamp.add(rewardsClaimTimeSeconds);
  }

  function calculateReward(address user) public view returns (uint256) {
    uint256 contractTokenBal = IERC20(token).balanceOf(address(this));
    uint256 stakerPercOfTotal = stakers[user].totalStaked.div(contractTokenBal);
    uint256 halfContractEthBal = address(this).balance.div(2);
    uint256 rewardOwed = halfContractEthBal.mul(stakerPercOfTotal);
    return rewardOwed;
  }

  function getNextClaimTime(address user) public view returns (uint256) {
    return stakers[user].lastStakedTimestamp.add(rewardsClaimTimeSeconds);
  }

  /* ========== Owner Functions ========== */

  function setRewardsClaimTimeSeconds(uint256 _seconds) external onlyOwner {
    rewardsClaimTimeSeconds = _seconds;
  }

  function emergencyWithdraw() external onlyOwner {
    payable(owner()).call{ value: address(this).balance }('');
  }

  /* ========== External Functions ========== */

  function stake(uint256 _amount) external {
    require(_amount > 0, "Amount must be greater than 0");
    IERC20(token).transferFrom(msg.sender, address(this), _amount);
     // Update staker's data
    StakerData storage staker = stakers[msg.sender];
    staker.totalStaked = staker.totalStaked.add(_amount);
    staker.lastStakedTimestamp = block.timestamp;
    stakers[msg.sender].reward = calculateReward(msg.sender);
    
  }

  function unstakeAllAndClaimRewards() external {
    StakerData storage staker = stakers[msg.sender];
    require(staker.totalStaked >= 0, "You don't have tokens staked.");
    //if able to claim then send them rewards before unstaking 
    if(canClaimRewards(msg.sender)){
      uint256 reward = calculateReward(msg.sender);
      require(reward > 0, "No reward to claim");

      staker.reward = calculateReward(msg.sender);
      staker.lastStakedTimestamp = block.timestamp;

      payable(msg.sender).call{ value: reward }('');
      emit SendETHRewards(msg.sender, reward);
    }
    //Transfer tokens out to sender and emit event
    IERC20(token).transfer(msg.sender, stakers[msg.sender].totalStaked);
    emit UnstakedTokens(msg.sender, stakers[msg.sender].totalStaked);
    // Update staker's data
    staker.totalStaked = 0;
    staker.reward = 0;
    staker.lastStakedTimestamp = block.timestamp;
  }

  function claimReward() external {
    require(canClaimRewards(msg.sender), "Wait the claim window to claim rewards.");
    StakerData storage staker = stakers[msg.sender];
    uint256 reward = calculateReward(msg.sender);
    require(reward > 0, "No reward to claim");

    staker.reward = calculateReward(msg.sender);
    staker.lastStakedTimestamp = block.timestamp;

    payable(msg.sender).call{ value: reward }('');
    emit SendETHRewards(msg.sender, reward);
  }

  receive() external payable {}

}