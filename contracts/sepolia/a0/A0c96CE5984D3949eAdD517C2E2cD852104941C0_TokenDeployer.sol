     * @param _tokenPerBlock The amount of reward tokens per block.
     */
    function initialize(
        uint64 _startBlock,
        uint64 _endBlock,
        uint128 _tokenPerBlock
    ) external onlyOwner {
        require(startBlock == 0, "SingleStakePool: initialized");
        require(
            block.number < _startBlock && _endBlock > _startBlock,
            "SingleStakePool: invalid block range"
        );

        endBlock = _endBlock;
        startBlock = _startBlock;
        tokenPerBlock = _tokenPerBlock;
        lastRewardBlock = _startBlock;

        rewardToken.safeTransferFrom(
            _msgSender(),
            address(this),
            tokenPerBlock * (endBlock - startBlock)
        );

