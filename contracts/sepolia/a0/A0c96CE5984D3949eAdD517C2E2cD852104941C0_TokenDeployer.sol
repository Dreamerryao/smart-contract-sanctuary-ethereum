     * @param _stakeToken address of the token being staked.
     * @param _rewardToken address of the token being earned as reward.
     */
    constructor(IERC20Metadata _stakeToken, IERC20Metadata _rewardToken) {
        require(
            _stakeToken.decimals() == _rewardToken.decimals(),
            "SingleStakePool: decimals are not same"
        );

        stakeToken = _stakeToken;
        rewardToken = _rewardToken;
    }

