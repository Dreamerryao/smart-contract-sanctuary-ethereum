pragma solidity ^0.8.9;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/security/Pausable.sol";

import "./Blacklistable.sol";
import "../libraries/DataTypes.sol";

/**
 * @title TaxableToken
 * @notice A standard ERC20 token with additional features such as
 * blacklisting, burning, minting, and transfer fees.
 */
contract TaxableToken is Blacklistable, Pausable, ERC20 {
    uint8 private immutable _decimals;

    bool public immutable minable;
    bool public immutable burnable;
    bool public immutable enableTaxModule;

    uint16 public buyTax = 0;
    uint16 public sellTax = 0;
    uint16 public transferTax = 0;

    address public beneficiary;

    mapping(address => bool) public isMarketPair;
    mapping(address => bool) public isExcludedFromFee;

    event BuyTaxSet(uint256 buyTax);
    event SellTaxSet(uint256 sellTax);
    event TransferTaxSet(uint256 transferTax);
    event BeneficiarySet(address beneficiary);
    event MarketPairStatusSet(address pair, bool newValue);
    event IsExcludedFromFeeSet(address account, bool newValue);
    event ChargeFees(address from, address to, uint256 amount, uint256 fee);

    constructor(DataTypes.TaxableTokenData memory args) ERC20(args.name, args.symbol) {
        _decimals = args.decimals;

        minable = args.minable;
        burnable = args.burnable;
        enableTaxModule = args.enableTaxModule;
    }

    function decimals() public view override returns (uint8) {
        return _decimals;
    }

    /**
     * @notice Calculate transfer fees, including
     * transfer tax, buy tax, and sell tax.
     * @param sender The address of the sender.
     * @param recipient The address of the recipient.
     * @param amount The amount of tokens to transfer.
     * @return The amount of transfer fees.
     *
     */
    function calcFee(
        address sender,
        address recipient,
        uint256 amount
    ) public view returns (uint256) {
        if (isExcludedFromFee[sender] || isExcludedFromFee[recipient]) {
            return 0;
        }

        if (isMarketPair[sender]) {
            return (amount * buyTax) / 10000;
        }
        if (isMarketPair[recipient]) {
            return (amount * sellTax) / 10000;
        }
        return (amount * transferTax) / 10000;
    }

    /**
     * @notice Triggers stopped state.
     *
     * Requirements:
     *
     * - The contract must not be paused.
     */
    function pause() external onlyOwner whenNotPaused {
        _pause();
    }

    /**
     * @notice Returns to normal state.
     *
     * Requirements:
     *
     * - The contract must be paused.
     */
    function unpause() external onlyOwner whenPaused {
        _unpause();
    }

    /**
     * @notice Set the market pair status.
     * @param pair The address of the pair.
     * @param newValue The new market pair status.
     */
    function setMarketPairStatus(
        address pair,
        bool newValue
    ) external onlyOwner {
        require(enableTaxModule, "Token: Tax disabled");

        isMarketPair[pair] = newValue;

        emit MarketPairStatusSet(pair, newValue);
    }

    /**
     * @notice Set the excluded status for transfer fees for an account.
     * @param account The address of the account.
     * @param newValue The new excluded status.
     */
    function setIsExcludedFromFee(
        address account,
        bool newValue
    ) external onlyOwner {
        require(enableTaxModule, "Token: Tax disabled");

        isExcludedFromFee[account] = newValue;

        emit IsExcludedFromFeeSet(account, newValue);
    }

    /**
     * @notice Set the tax rate for buying the token.
     * @param buyTax_ The new tax rate for buying the token.
     */
    function setBuyTax(uint16 buyTax_) external onlyOwner {
        require(enableTaxModule, "Token: Tax disabled");
        require(buyTax_ <= 10000, "Token: Max buy fee 100%");

        buyTax = buyTax_;

        emit BuyTaxSet(buyTax_);
    }

    /**
     * @notice Set the tax rate for selling the token.
     * @param sellTax_ The new tax rate for selling the token.
     */
    function setSellTax(uint16 sellTax_) external onlyOwner {
        require(enableTaxModule, "Token: Tax disabled");
        require(sellTax_ <= 10000, "Token: Max sell fee 100%");

        sellTax = sellTax_;

        emit SellTaxSet(sellTax_);
    }

    /**
     * @notice Set the tax rate for transfer the token.
     * @param transferTax_ The new tax rate for transfer the token.
     */
    function setTransferTax(uint16 transferTax_) external onlyOwner {
        require(enableTaxModule, "Token: Tax disabled");

        transferTax = transferTax_;

        emit TransferTaxSet(transferTax_);
    }

    /**
     * @notice Set the address of the transfer fees beneficiary.
     * @param beneficiary_ The address of the transfer fees beneficiary.
     */
    function setBeneficiary(address beneficiary_) external onlyOwner {
        require(enableTaxModule, "Token: Tax disabled");

        beneficiary = beneficiary_;

        emit BeneficiarySet(beneficiary_);
    }

    /**
     * @notice See {IERC20-transfer}.
     *
     * Requirements:
     *
     * - `to` cannot be the zero address.
     * - the caller must have a balance of at least `amount`.
     */
    function transfer(
        address to,
        uint256 amount
    )
        public
        virtual
        override
        whenNotPaused
        notBlacklisted(to)
        notBlacklisted(_msgSender())
        returns (bool)
    {
        if (!enableTaxModule) {
            _transfer(_msgSender(), to, amount);
        } else {
            uint256 fee = calcFee(_msgSender(), to, amount);
            _transfer(_msgSender(), to, amount - fee);

            _transfer(_msgSender(), beneficiary, fee);

            emit ChargeFees(_msgSender(), to, amount, fee);
        }

        return true;
    }

    /**
     * @notice Destroys `amount` tokens from the caller.
     *
     * See {ERC20-_burn}.
     */
    function burn(uint256 amount) external virtual {
        require(burnable, "Token: nonburnable");

        _burn(_msgSender(), amount);
    }

    /**
     * @notice Creates `amount` new tokens for `to`.
     *
     * See {ERC20-_mint}.
     *
     * Requirements: owner
     */
    function mint(address to, uint256 amount) external virtual onlyOwner {
        require(minable, "Token: unmineable");

        _mint(to, amount);
    }
}