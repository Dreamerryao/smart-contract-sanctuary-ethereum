pragma solidity ^0.8.9;

import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/IERC20Metadata.sol";

import "./libraries/DataTypes.sol";
import "./token/TaxableToken.sol";
import "./stake/SingleStakePool.sol";

contract TokenDeployer {
    event Deployed(
        address deployer,
        uint256 pid,
        address token,
        string metadataURI,
        uint256 timestamp
    );

    function deploy(
        uint256 pid,
        address owner,
        string calldata metadataURI,
        DataTypes.TaxableTokenData calldata args
    ) external returns (TaxableToken) {
        TaxableToken token = new TaxableToken(args);

        token.transferOwnership(owner);

        emit Deployed(
            msg.sender,
            pid,
            address(token),
            metadataURI,
            block.timestamp
        );

        return token;
    }
}

contract SingleStakePoolDeployer {
    using SafeERC20 for IERC20Metadata;

    event Deployed(
        address deployer,
        uint256 pid,
        address pool,
        string metadataURI,
        uint256 timestamp
    );

    function deploy(
        uint256 pid,
        string calldata metadataURI,
        DataTypes.SingleStakePoolData calldata args
    ) external returns (SingleStakePool) {
        uint256 deposit = args.tokenPerBlock *
            (args.endBlock - args.startBlock);
        args.rewardToken.safeTransferFrom(msg.sender, address(this), deposit);

        SingleStakePool pool = new SingleStakePool(
            args.stakeToken,
            args.rewardToken
        );
        args.rewardToken.approve(address(pool), deposit);
        pool.initialize(args.startBlock, args.endBlock, args.tokenPerBlock);

        emit Deployed(
            msg.sender,
            pid,
            address(pool),
            metadataURI,
            block.timestamp
        );

        return pool;
    }
}

