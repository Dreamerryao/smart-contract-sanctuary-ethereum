    uint64 public endBlock;
    uint128 public tokenPerBlock;

    uint256 public accTokenPerShare;
    uint256 public lastRewardBlock;

    mapping(address => UserInfo) public userInfo;

    IERC20Metadata public immutable stakeToken;
    IERC20Metadata public immutable rewardToken;

    uint256 private constant ACC_TOKEN_PRECISION = 1e20;

    event Initialized(
        uint64 startBlock,
        uint64 endBlock,
        uint128 tokenPerBlock
    );
