import "./PaymentContractInterface.sol";
import "@openzeppelin/contracts/utils/introspection/ERC165.sol";


contract PaymentContract is ERC165, PaymentContractInterface, PaymentInterfaceId{
    event PaymentMade(uint valueToPay);
    constructor(){

    }

    function MakePayment(uint valueToPay) public {
        //Do some logic
