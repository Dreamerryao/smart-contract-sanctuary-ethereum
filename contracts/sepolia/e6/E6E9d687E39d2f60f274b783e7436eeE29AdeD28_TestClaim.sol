/**
 * @title  Claim necessary tokens for testing Furion
 * @notice We will mint sender specific amount of FurionToken, MockUSD, and NFTs
 */

contract TestClaim is Ownable {
    // NFT symbol to index to address;
    mapping(string => address) public nfts;
    string[] symbols;
    
    address fur = 0x723639838f063720E5e6C75b4C86fa6FF64f2DdD;
    address usdt = 0x68F4bfc14A87357D4ff686872a4b3cbA125C4008;

    uint256 furAmount = 1000e18;
    uint256 usdtAmount = 1000e6;
    uint256 nftAmount = 2;

    mapping(address => bool) public claimed;

    constructor() {
        string[6] memory _symbols = ["MIL", "DEGODS", "PPG", "AZUKI", "GHOST", "CAPTAINZ"];
        address[6] memory addresses = [
            0x5a835d653B402dbadBAc95aD30758d952F628F46,
            0x698BEC3DD89457179C4cB3D4613251F646A37C98,
            0x9BfeD30E867d34bF3ff08cfe7B30B980E9b3907C,
            0xa384c0de79a2448c4054aA4AD1F444F7836c92c0,
            0x949d4dC0a2F38A97cEF7764fF0fCA1F201D21Ff7,
            0x34c44698bd4457b3F0dEE01F0507522476C1866F
        ];
        uint256 length = _symbols.length;

        for (uint i; i < length; ) {
            nfts[_symbols[i]] = addresses[i];
            symbols.push(_symbols[i]);

            unchecked {
                ++i;
            }
        }
    }

    function changeFUR(address _newAddress) external onlyOwner {
        fur = _newAddress;
    }

    function changeFURAmount(uint64 _newAmount) external onlyOwner {
        furAmount = _newAmount;
    }

    function changeUSDT(address _newAddress) external onlyOwner {
        usdt = _newAddress;
    }

    function changeUSDTAmount(uint64 _newAmount) external onlyOwner {
        usdtAmount = _newAmount;
    }

    function addNFT(string calldata _nftSymbol, address _nftAddress) external onlyOwner {
        require(nfts[_nftSymbol] == address(0), "NFT already added before");

        symbols.push(_nftSymbol);
        nfts[_nftSymbol] = _nftAddress;
    }

    function removeNFT(string calldata _nftSymbol) external onlyOwner {
        nfts[_nftSymbol] = address(0);
    }

    function changeNFT(string calldata _nftSymbol, address _newAddress) external onlyOwner {
        nfts[_nftSymbol] = _newAddress;
    }

    function changeNFTAmount(uint64 _newAmount) external onlyOwner {
        nftAmount = _newAmount;
    }

    function resetClaim(address _user) external onlyOwner {
        claimed[_user] = false;
    }
 
    /**
     * @notice Claim testing tokens
     */
    function claimTest() external {
        // every account can only claim once
        require(!claimed[msg.sender], "Already claimed");

        claimed[msg.sender] = true;

        IFurionToken(fur).mintFurion(msg.sender, furAmount);

        bytes memory data;
        bool success;
        bytes memory returnData;

        // Mint USDT
        data = abi.encodeWithSignature("mint(address,uint256)", msg.sender, usdtAmount);
        (success, returnData) = usdt.call(data);
        require(success, string(returnData));

        data = abi.encodeWithSignature("mint(address,uint256)", msg.sender, nftAmount);

        for (uint i; i < symbols.length; ) {
            address nftAddress = nfts[symbols[i]];

            if (nftAddress != address(0)) {
                (success, returnData) = nftAddress.call(data);
                require(success, string(returnData));
            }

            unchecked {
                ++i;
            }
        }
    }
}

