// File: contracts/Escrow.sol


pragma solidity ^0.8.12;









error Escrow__NotReady();
error Only__Depositor();
error Only__Arbiter();
error Arbiter__CannotBeSameWithBeneficiary();
error Arbiter__CannotBeSameWithDepositor();
error Depositor__CannotBeSameWithBeneficiary();
error Not__EnoughEth();
error Escrow__NotOpen();

contract Escrow is ReentrancyGuard, Ownable {
    address public arbiter;
    address public beneficiary;
    address public depositor;
    uint public contractTotalBalance;

    // Time Req
    uint public timeInterval;
    uint256 private lastTimeStamp;

    // Automation State Variables
    uint public myUpkeepID;

    // Contract Name To Filter By User
    string private contractName;

    // Set Self-Automated Credentials
    LinkTokenInterface public immutable i_link;
    address public immutable registrar;
    AutomationRegistryInterface public immutable i_registry;
    bytes4 registerSig = KeeperRegistrarInterface.register.selector;

    enum escrowStatus {
        Open,
        Fulfilled,
        Cancelled
    }

    escrowStatus public statusEscrow;

    struct EscrowCredentials {
        address _depositor;
        address _arbiter;
        address _beneficiary;
        escrowStatus _contractStatus;
        uint _lastTimeStamp;
        uint _timeInterval;
        uint _contractTotalBalance;
    }

    EscrowCredentials public escrowCredentials;

    // Type Declarations
    using PriceConverter for uint256;
    AggregatorV3Interface private s_priceFeed;
    uint256 public constant MINIMUM_USD = 10 * 10 ** 18; // Later increase it

    function adressesMustBeUnique() private view {
        if (msg.sender == arbiter) {
            revert Arbiter__CannotBeSameWithDepositor();
        }
        if (msg.sender == beneficiary) {
            revert Depositor__CannotBeSameWithBeneficiary();
        }
        if (arbiter == beneficiary) {
            revert Arbiter__CannotBeSameWithBeneficiary();
        }
    }

    constructor(
        address _arbiter,
        address _beneficiary,
        uint _timeInterval,
        LinkTokenInterface _link,
        address _registrar,
        AutomationRegistryInterface _registry,
        address priceFeed
    ) payable {
        s_priceFeed = AggregatorV3Interface(priceFeed);
        if (msg.value.getConversionRate(s_priceFeed) < MINIMUM_USD) {
            revert Not__EnoughEth();
        }
        arbiter = _arbiter;
        beneficiary = _beneficiary;
        depositor = msg.sender;
        adressesMustBeUnique();
        statusEscrow = escrowStatus.Open;
        timeInterval = _timeInterval;
        lastTimeStamp = block.timestamp;
        i_link = _link;
        registrar = _registrar;
        i_registry = _registry;
        contractName = string.concat(
            "Escrow_",
            Strings.toHexString(uint256(uint160(msg.sender)), 20)
        );
        contractTotalBalance = msg.value;
        escrowCredentials = EscrowCredentials(
            depositor,
            arbiter,
            beneficiary,
            statusEscrow,
            lastTimeStamp,
            timeInterval,
            contractTotalBalance
        );
    }

    event Approved(address indexed _beneficiary, uint indexed _amountSend);
    event MoneySendBackToContractOwner(
        address indexed _depositor,
        uint indexed _amountRefunded
    );

    modifier onlyArbiter() {
        if (msg.sender != arbiter) {
            revert Only__Arbiter();
        }
        _;
    }

    modifier onlyStatusOpen() {
        if (statusEscrow != escrowStatus.Open) {
            revert Escrow__NotOpen();
        }
        _;
    }

    receive() external payable {
        contractTotalBalance += msg.value;
    }

    function extendRemainingTime(
        uint _timeExtend
    ) external onlyArbiter onlyStatusOpen {
        timeInterval += _timeExtend;
        escrowCredentials = EscrowCredentials(
            depositor,
            arbiter,
            beneficiary,
            statusEscrow,
            lastTimeStamp,
            timeInterval,
            contractTotalBalance
        );
    }

    function approve() external onlyArbiter onlyStatusOpen nonReentrant {
        uint balance = address(this).balance;
        statusEscrow = escrowStatus.Fulfilled; // This might go to end, ask this
        escrowCredentials = EscrowCredentials(
            depositor,
            arbiter,
            beneficiary,
            statusEscrow,
            lastTimeStamp,
            timeInterval,
            contractTotalBalance
        );
        (bool sent, ) = payable(beneficiary).call{value: balance}("");
        require(sent, "Failed to send Ether");
        emit Approved(beneficiary, balance);
    }

    function cancelEscrow() public onlyArbiter onlyStatusOpen nonReentrant {
        statusEscrow = escrowStatus.Cancelled;
        escrowCredentials = EscrowCredentials(
            depositor,
            arbiter,
            beneficiary,
            statusEscrow,
            lastTimeStamp,
            timeInterval,
            contractTotalBalance
        );

        (bool success, ) = depositor.call{value: address(this).balance}("");
        require(success);
    }

    function contractMoney() public view returns (uint) {
        return address(this).balance;
    }

    function withdrawMoney() public payable nonReentrant {
        require(
            statusEscrow == escrowStatus.Cancelled && msg.sender == depositor,
            "The beneficiary has not fulfilled the circumstances"
        );
        (bool success, ) = depositor.call{value: address(this).balance}("");
        require(success);
    }

    // If the contract is not approved, send the money back to the arbiter

    function registerAndPredictID(
        string memory name,
        uint32 gasLimit,
        uint96 amount
    ) public {
        // Create a new counter
        (State memory state, , , , ) = i_registry.getState();
        uint256 oldNonce = state.nonce;
        // Encode the data to send to the registrar
        bytes memory payload = abi.encode(
            name,
            "0x",
            address(this),
            // 999999
            gasLimit,
            address(msg.sender),
            "0x",
            "0x",
            // 2000000000000000000
            amount,
            address(this)
        );

        // Transfer LINK and call the registrar
        i_link.transferAndCall(
            registrar,
            amount,
            bytes.concat(registerSig, payload)
        );
        (state, , , , ) = i_registry.getState();
        uint256 newNonce = state.nonce;
        if (newNonce == oldNonce + 1) {
            uint256 upkeepID = uint256(
                keccak256(
                    abi.encodePacked(
                        blockhash(block.number - 1),
                        address(i_registry),
                        uint32(oldNonce)
                    )
                )
            );
            myUpkeepID = upkeepID;
        } else {
            revert("auto-approve disabled");
        }
    }

    // Automation Process

    function checkUpkeep(
        bytes memory /* checkData */
    ) public view returns (bool upkeepNeeded, bytes memory /* performData */) {
        bool isOpen = (statusEscrow == escrowStatus.Open);
        bool timePassed = ((block.timestamp - lastTimeStamp) > timeInterval);
        bool hasBalance = address(this).balance > 0;

        upkeepNeeded = (isOpen && timePassed && hasBalance);

        return (upkeepNeeded, "");
    }

    function performUpkeep(bytes calldata) external {
        (bool upKeepNeeded, ) = checkUpkeep("");
        if (!upKeepNeeded) {
            revert Escrow__NotReady();
        }

        uint addressBalance = address(this).balance;

        statusEscrow = escrowStatus.Cancelled;
        escrowCredentials = EscrowCredentials(
            depositor,
            arbiter,
            beneficiary,
            statusEscrow,
            lastTimeStamp,
            timeInterval,
            contractTotalBalance
        );

        (bool success, ) = depositor.call{value: addressBalance}("");
        require(success);
        emit MoneySendBackToContractOwner(depositor, addressBalance);
    }

    function getContractName() public view returns (string memory) {
        return contractName;
    }

    function getEscrowCredentials()
        public
        view
        returns (EscrowCredentials memory)
    {
        return escrowCredentials;
    }

    function getPriceFeed() public view returns (AggregatorV3Interface) {
        return s_priceFeed;
    }

    function getVersion() public view returns (uint256) {
        return s_priceFeed.version();
    }
}