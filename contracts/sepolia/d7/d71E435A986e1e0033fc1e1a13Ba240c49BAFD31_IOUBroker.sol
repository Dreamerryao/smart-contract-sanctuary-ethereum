pragma solidity=0.8.20;

import '@openzeppelin/token/ERC20/ERC20.sol';
import '@openzeppelin/token/ERC20/IERC20.sol';
import '@solady/auth/Ownable.sol';
import './interfaces/IIOUBroker.sol';

contract IOUBroker is ERC20,IIOUBroker, Ownable {

    // For now, one alloc at a time
    mapping(address => IOUAlloc) public userAddrToIOUAllocation;

    error NotValidIOUBalance();
    error NotEnoughToken();
    error NotOwnerAddress();

    constructor(string memory _name, string memory _symbol) ERC20(_name, _symbol) {
        _initializeOwner(msg.sender);
    }

    /* Externals */
    // Need to approve on BOTH contracts to move funds
    function swapForTGE(address _tokenAddress) external {
        // if(iouToken.balanceOf(msg.sender) <= 0) revert NotValidIOUBalance();
        // if(userAddrToIOUAllocation[msg.sender].allocationAmount <= iouToken.balanceOf(msg.sender)) revert NotEnoughToken();

        IERC20 token = IERC20(_tokenAddress);
        token.transfer(msg.sender, userAddrToIOUAllocation[msg.sender].allocationAmount);

        IERC20 iouToken = IERC20(address(this));
        iouToken.transferFrom(msg.sender, address(this), userAddrToIOUAllocation[msg.sender].allocationAmount);
        
        delete userAddrToIOUAllocation[msg.sender];
    }

    // /* Overrides */
    // // Prevent User from sending IOU token externally
    function _beforeTokenTransfer(address from,address to,uint256 tokenId) internal override {
        if(to == address(this) || from == address(this)) super._beforeTokenTransfer(from, to, tokenId);
        revert NotOwnerAddress();
    }

    /* View */
    function getBalancePerToken(
        address _address) view external returns(uint256){
        IERC20 token = IERC20(_address);
        return token.balanceOf(address(this));
    }

    /* Only Owner */
    function createIOUAllocation(
        address beneficiary,
        uint256 allocationAmount
    ) external {
        // if (beneficiary == address(0)) revert InvalidBeneficiary();
        // if (allocationAmount <= 0) revert InvalidAllocationAmount();

        IOUAlloc memory allocation = IOUAlloc(address(0), beneficiary, allocationAmount);
        userAddrToIOUAllocation[msg.sender] = allocation;
        _mint(msg.sender, allocationAmount);
    }

    function deleteAlloc(address _address) external onlyOwner{
        delete userAddrToIOUAllocation[_address];
    }


}

