        IERC20 rewardToken;
        uint256 agreedAssetValue; // value in usd
        string stakingRewardintervals; // years, days, months
        uint256 totalStakingReward; // total reward earn
        string rewardPayounts; //monthly, daily, weekly
        address rewardReceivingWallet; //address
        uint8 intrestRate;
    }
   
    Stakeinfo stakeDetails;

    struct rewardReleaseday {
        uint8 noreward;
        uint32 date;
    }

    rewardReleaseday [] private rewardRelease;
    mapping(uint8 => uint32) private reward;
    bool public tokenMint = false;
    uint8 private _pendingRewards;
    uint8 private _completedRewards=0;
    string private uri = "";
    constructor(
            string memory stakeName_,
            string memory symbol_,
            string memory _uri,
            IERC20 rewardToken_,
            uint256 agreedAssetValue_,
            string memory stakingRewardintervals_,
            uint256 totalStakingReward_,
            string memory rewardPayounts_,
            address rewardReceivingWallet_,
            uint8 intrestRate_,
            uint32[] memory rewardReceivingdays_
        )
        ERC721(stakeName_, symbol_) {
            uint8 tokenId = 1;
            stakeDetails = Stakeinfo({
                rewardToken: rewardToken_,
                agreedAssetValue: agreedAssetValue_,
                stakingRewardintervals: stakingRewardintervals_,
                rewardPayounts: rewardPayounts_,
                totalStakingReward: totalStakingReward_,
                rewardReceivingWallet: rewardReceivingWallet_,
                intrestRate: intrestRate_
            });
            _pendingRewards = uint8(rewardReceivingdays_.length);
            _safeMint(msg.sender, tokenId);
            _setBaseURI(_uri);
            uint32 rewardReceivingday;

            if(rewardReceivingdays_.length > 0){
                for(uint8 i; i < rewardReceivingdays_.length; i++){
                    rewardReceivingday = rewardReceivingdays_[i];
                    setrewardDeutime(i+1, rewardReceivingday);
                    rewardReleaseday memory rewardDay = rewardReleaseday(i, rewardReceivingday);
                    rewardRelease.push(rewardDay);
                }
            }
            tokenMint = true;

        }

    function _setBaseURI(string memory _uri) internal virtual {
        uri = _uri;
    }

    function documentURL() public virtual view returns(string memory){
        return uri;
    }

    function _baseURI() internal view virtual override returns (string memory) {
        return uri;
    }

    function setrewardDeutime(uint8 i, uint32 rewardduedate) private {
        reward[i] = rewardduedate;
    }

    // The following functions are overrides required by Solidity.

    function _beforeTokenTransfer(address from, address to, uint256 tokenId)
        internal
        override(ERC721)
    {
        super._beforeTokenTransfer(from, to, tokenId);
    }

    function _burn(uint256 tokenId) internal override(ERC721) {
        super._burn(tokenId);
    }

    function supportsInterface(bytes4 interfaceId)
        public
        view
        override(ERC721)
        returns (bool)
    {
        return super.supportsInterface(interfaceId);
    }

    function getBalance(address _address) public virtual view returns(uint256){
        Stakeinfo storage tokens = stakeDetails;
        IERC20 rewardTokens;
        rewardTokens = tokens.rewardToken;
        return rewardTokens.balanceOf(_address);
    }

    function rewardPaid() public virtual onlyOwner returns(bool) {
        _pendingRewards = _pendingRewards -1;
       _completedRewards = _completedRewards + 1;
        return true;
    }
    function getNumberofPendingRewards() public view virtual returns(uint8){
        return _pendingRewards;
    }

    function getNumberofCompletedRewards() public view virtual returns(uint8){
        return _completedRewards;
    }

    function rewardToken() public view virtual returns(IERC20){
       Stakeinfo storage tokens = stakeDetails;
       return tokens.rewardToken;
    }
    
    function agreedAssetValue() public view virtual returns(uint){
        Stakeinfo storage tokens = stakeDetails;
        return tokens.agreedAssetValue;
    }

