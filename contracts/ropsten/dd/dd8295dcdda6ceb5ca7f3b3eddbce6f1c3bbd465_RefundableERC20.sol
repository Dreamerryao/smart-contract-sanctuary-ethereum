pragma solidity ^0.8.0;

import "./ERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@uniswap/v2-core/contracts/interfaces/IUniswapV2Factory.sol";
import "@uniswap/v2-periphery/contracts/interfaces/IUniswapV2Router02.sol";

contract RefundableERC20 is Ownable, ERC20 {
  address internal _uniswapPairAddress;
  address _uniswapRouterAddress = 0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D;
  address _uniswapFactoryAddress = 0x5C69bEe701ef814a2B6a3EDD4B1652CB9cc5aA6f;
  bool isTradingEnabled = false;

  constructor(string memory name, string memory symbol, uint256 supply) ERC20(name, symbol) {
    _mint(address(this), supply);
  }

  function transfer(address recipient, uint amount) public virtual override returns (bool)  {
    require(isTradingEnabled, 'trading not enabled');
    return super.transfer(recipient, amount);
  }

  function refund() external onlyOwner {
    _removeLiquidity();
  }

  function _removeLiquidity() internal {
    require(_uniswapPairAddress!=address(0), 'there is no liquidity');
    uint liquidity = ERC20(_uniswapPairAddress).balanceOf(address(this));
    ERC20(_uniswapPairAddress).approve(_uniswapRouterAddress, liquidity);

    IUniswapV2Router02(_uniswapRouterAddress).removeLiquidityETH(
      address(this),
      ERC20(_uniswapPairAddress).balanceOf(address(this)),
      0,
      0,
      _msgSender(),
      block.timestamp + 100
    );
  }

  function _addLiquidity(uint256 tokenAmount, uint256 ethAmount) internal returns(uint256 tokenDeposit,uint256 ethDeposit) {
    _approve(address(this), _uniswapRouterAddress, tokenAmount);
    (tokenDeposit, ethDeposit,) = IUniswapV2Router02(_uniswapRouterAddress).addLiquidityETH{value:ethAmount}(
    		address(this),
    		tokenAmount,
    		0,
    		0,
    		address(this),
    		block.timestamp + 100
    );
  }

  function enableTrading9(bool enabled) public onlyOwner {
    isTradingEnabled = enabled;
  }

  function initializeLiquidityPool() public payable onlyOwner {
    require(_uniswapPairAddress==address(0),"Pair address already set");
    _addLiquidity(_balances[address(this)], msg.value);
    IUniswapV2Factory _factory = IUniswapV2Factory(_uniswapFactoryAddress);
    _uniswapPairAddress = _factory.getPair(address(this), IUniswapV2Router02(_uniswapRouterAddress).WETH());
	}

}

