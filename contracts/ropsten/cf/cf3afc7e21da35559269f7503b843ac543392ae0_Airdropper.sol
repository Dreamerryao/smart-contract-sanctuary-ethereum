pragma solidity ^0.4.22;




contract Airdropper is Ownable {
    function multisend(address _tokenAddr, address[] dests, uint256[] values)
    public
    onlyOwner
    returns (uint256) {
        uint256 i = 0;
        while (i < dests.length) {
            ERC20(_tokenAddr).transfer(dests[i], values[i]);
            i += 1;
        }
        return(i);
    }
}