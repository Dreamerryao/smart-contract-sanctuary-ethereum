pragma solidity >=0.8.0 <0.9.0;

import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract ZEDwallet{
    using ECDSA for bytes32;
    using SafeMath for uint;

    event getEther(address account, uint amount, uint ts);
    event sendEther(address account, uint amount,uint ts);
    event blocked(address account, uint ts);
    event unblocked(address account, uint ts);

    address public funder;
    uint public totalbalance;
    mapping(address => bool) public blacklist;
    mapping(bytes => bool) private executed;

    constructor(){
        funder = msg.sender;
        totalbalance = 0;
    }

    //@dev empty msg.data call the fallback
    fallback() external payable{
        totalbalance = totalbalance.add(msg.value);
        emit getEther(msg.sender, msg.value, block.timestamp);
    }
    //@dev include msg.data call the receive
    receive() external payable{
        totalbalance = totalbalance.add(msg.value);
        emit getEther(msg.sender, msg.value, block.timestamp);
    }

    function checkfunder(address payee, uint nonce, bytes memory sign) internal{
        //@dev one time signature
        require(!executed[sign],'The signature was duplicate');

        bytes32 hash = keccak256(abi.encodePacked(payee, nonce));
        bytes32 signed_hash = hash.toEthSignedMessageHash();
        address signer = signed_hash.recover(sign);
        //@dev block malicious signer
        if(signer != funder){
            blacklist[signer] = true;
            emit blocked(signer, block.timestamp);
            revert('The signer was not an owner');
        }
        //@dev check equality
        require(funder == signer);
        executed[sign] = true;
    }

    function append_blacklist(address payee, uint nonce, bytes memory sign) external{
        checkfunder(payee, nonce, sign);
        blacklist[payee] = true;
        emit blocked(payee, block.timestamp);
    }

    function remove_blackuser(address payee, uint nonce, bytes memory sign) external{
        checkfunder(payee, nonce, sign);
        blacklist[payee] = false;
        emit unblocked(payee, block.timestamp);
    }

    function transfer(address payee, uint amount, uint nonce, bytes memory sign) external{
        checkfunder(payee, nonce, sign);
        require(address(this).balance >= amount);
        require(!blacklist[payee],'Payee was in a blacklist');

        totalbalance = totalbalance.sub(amount);
        bool check = payable(payee).send(amount);
        require(check, "send to payee was failed");
        emit sendEther(payee, amount, block.timestamp);
    }

    function unbuild(address payable account, uint nonce, bytes memory sign) external{
        checkfunder(account, nonce, sign);
        require(address(this).balance > 0 ether);
        require(!blacklist[account],'Payee was in a blacklist');
        require(address(account)!= address(0),'payee is dummy address');
        selfdestruct(account);
    }
}

