contract LootBox{
  using SafeMath for uint256;

  // A structure to define arbitrary contract calls
  struct Call {
    address to;
    uint256 value;
    bytes data;
  }

  address private _owner;
  

  mapping (address => bool) whiteListed;
  address public tokenAddr;
  string[] public options;

  event WithdrewERC20(address indexed token, uint256 amount, uint256 rand);
 
  constructor(){
      _owner = msg.sender;
  }

  function executeCalls(Call[] calldata calls) external onlyOwner returns (bytes[] memory) {
    bytes[] memory response = new bytes[](calls.length);
    for (uint256 i = 0; i < calls.length; i++) {
      response[i] = _executeCall(calls[i].to, calls[i].value, calls[i].data);
    }
    return response;
  }

  function plunder(IERC20Upgradeable erc20, address payable to) public {
    require(to != address(0), "LootBox/non-zero-to");
    require(whiteListed[msg.sender], "only whitelisted user can call");
    uint nonce = 1;
    uint rand = uint(keccak256(abi.encodePacked(block.timestamp, msg.sender, nonce)));
    rand = rand % 100;
    
    _withdrawERC20(erc20, to, rand);
  }
  
  function _executeCall(address to, uint256 value, bytes memory data) internal returns (bytes memory) {
    (bool succeeded, bytes memory returnValue) = to.call{value: value}(data);
    require(succeeded, string(returnValue));
    return returnValue;
  }

  function _withdrawERC20(IERC20Upgradeable token, address to, uint rand) internal {
      uint256 balance = token.balanceOf(address(this));
      balance = balance.div(100).mul(rand);
      token.transfer(to, balance);

      emit WithdrewERC20(address(token), balance, rand);

  }

  function addWhiteList(address[] calldata addrs) public onlyOwner{
      for (uint i = 0; i < addrs.length; i++) {
          whiteListed[addrs[i]] = true;
      }
  }

  function removeWhiteList(address[] calldata addrs) public onlyOwner{
      for (uint i = 0; i < addrs.length; i++) {
          whiteListed[addrs[i]] = false;
      }
  }

  function isWhiteListed(address addr) public view returns (bool)
  {
    return whiteListed[addr];
  }

  function getOptions() public view returns (string[] memory) {
      return options;
  }

  function pushToOptions(string[] memory newOptions) public {
      for(uint i = 0; i < newOptions.length - 1; i++)
      {
        options.push(newOptions[i]);
      }
      
  }

  function setOwner (address owner) public onlyOwner{
    require(owner == address(0), "LootBox/already-init");
    _owner = owner;
  }

  modifier onlyOwner {
    require(msg.sender == _owner, "LootBox/only-owner");
    _;
  }

}