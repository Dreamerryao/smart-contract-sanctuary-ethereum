  ) public onlyOwner {
    require(CATEGORIES[_category] == true, "Category not created");
    Pool storage pool = poolInfo[_pid];
    pool.rewardPerTokenUnit = _rewardPerTokenUnit;
    pool.divisor = _divisor;
    pool.rewardId = _rewardId;
    pool.rewardInterval = _rewardInterval;
    pool.minContribution = _minContribution;
    pool.lockPeriodInDays = _lockPeriodInDays;
    pool.endDate = _endDate;
    pool.category = _category;
  }

  function checkUserInCategory(address user, uint256 category) public view returns (bool) {
    return userCategoryStatus[user][category];
  } 

  function checkUserStake(uint16 _pid, address _addr) public view returns(Userstake memory) {
    return userstake[_pid][_addr][userstake[_pid][_addr].length.sub(1)];
  }

  function getRewardsGenerated(uint16 _pid, address _addr, uint256 index) public view returns (uint256){
    Userstake memory user = userstake[_pid][_addr][index];

    Pool memory pool = poolInfo[_pid];

    uint256 startTime = user.startTime;
    uint256 currentTime = user.endTime > block.timestamp ? block.timestamp : user.endTime;

    uint256 rewards = user.totalDeposited
    .mul(currentTime.sub(startTime))
    .mul(pool.rewardPerTokenUnit)
    .div(pool.divisor)
    .div(pool.rewardInterval);

    
    return rewards;

  }

  function stake(uint16 _pid, uint256 _amount) external returns (bool) {
    Pool storage pool = poolInfo[_pid];
    require(!checkUserInCategory(msg.sender, pool.category), "You already staked for same category");
    userCategoryStatus[msg.sender][pool.category] = true;
    require(
      _amount == pool.minContribution,
      "amount should be equal to contribution amount"
    );
    token.transferFrom(msg.sender, address(this), _amount);

    _stake(_pid, msg.sender, _amount);

    emit Stake(msg.sender, _pid, _amount);

    return true;
  }

  function _stake(
    uint16 _pid,
    address _sender,
    uint256 _amount
  ) private {
    uint256 index = userstake[_pid][_sender].length;
    Userstake storage user = userstake[_pid][_sender][index];
    Pool storage pool = poolInfo[_pid];

    uint256 stopDepo = pool.endDate.sub(pool.rewardInterval);
    require(block.timestamp <= stopDepo, "Staking is disabled for this pool");
    user.index = index;
    user.totalDeposited += _amount;
    pool.totalDeposit += _amount;
    user.startTime = block.timestamp;
    user.endTime = user.startTime  + pool.rewardInterval;

  }

  function claimAll(address _addr) public returns (bool) {
    uint256 len = poolInfo.length;

    for (uint16 i = 0; i < len; i++) {
      if(checkUserStake(i, _addr).claimed != true ){
      _unstake(i, _addr);
      }
    }

    return true;
  } 


  function unStake(uint16 _pid) public {
    _unstake(_pid, msg.sender);
  }

  function _unstake(uint16 _pid, address _addr) private {
    uint256 index = userstake[_pid][_addr].length;
    Userstake storage user = userstake[_pid][_addr][index];
    Pool storage pool = poolInfo[_pid];
    require(user.unStaked == false, "Already Unstaked");
    if(user.claimed == false && block.timestamp >= user.endTime){
      _claim(_pid, _addr);
    }
    user.unStaked = true;
    userCategoryStatus[msg.sender][pool.category] = false;
    pool.totalDeposit -= user.totalDeposited;
    token.transfer(_addr, user.totalDeposited);
    emit Unstake(msg.sender, _pid);
  }


  function claim(uint16 _pid) public {
    uint256 index = userstake[_pid][msg.sender].length;
    Userstake storage user = userstake[_pid][msg.sender][index];
    require(block.timestamp >= user.endTime, "Time is not reached");
    if(block.timestamp >= user.endTime){
      _unstake(_pid, msg.sender);
    }
  }

  function _claim(uint16 _pid, address _addr) private {
    uint256 index = userstake[_pid][_addr].length;
    Userstake storage user = userstake[_pid][_addr][index];
    require(user.unStaked == false, "Already Unstaked");
    require(user.claimed == false, "Already Claimed");
    require(block.timestamp >= user.endTime, "End time not reached");

    uint256 amount = getRewardsGenerated(_pid, _addr, index);
  
    if (amount > 0) {
      safeNFTTransfer(_addr, _pid, amount);
      user.lastClaimTime = block.timestamp;
      user.totalClaimed = user.totalClaimed.add(amount);
      user.claimed = true;
    }

    poolInfo[_pid].totalRewardDistributed += amount;
    emit Claim(_addr, amount);
  }


    function claimStuckTokens(address _token) external onlyOwner {
    if (_token == address(0)) {
      payable(owner()).transfer(address(this).balance);
      return;
    }
    IERC20 erc20token = IERC20(_token);
    uint256 balance = erc20token.balanceOf(address(this));
    erc20token.transfer(owner(), balance);
  }

  function withdrawTokens(uint16 id_, uint256 amt_) external onlyOwner {
    safeNFTTransfer(msg.sender, id_, amt_);
  }
  function safeNFTTransfer(
    address _to,
    uint16 _pid,
    uint256 _amount
  ) internal {
    uint256 _id = poolInfo[_pid].rewardId;

    nft.safeTransferFrom(address(this), _to, _id, _amount, "");
  }
}