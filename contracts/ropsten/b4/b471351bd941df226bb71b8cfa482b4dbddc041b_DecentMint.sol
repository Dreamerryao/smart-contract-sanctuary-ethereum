        return LottoTickets.balanceOf(_add);
    }
 
    function getTicketHolder(uint ticket) public view returns(address){
        return Playersmap[ticket];
    }
 
    function isWinner(uint tokenId) public view returns(bool){
        return tokenId == winningNumber;
    }
 
    function getBuyStatus() public view returns(uint256) {
        return claimperiod - block.timestamp;
    }
 
    function getDates() public view returns(uint256, uint256, uint256){
      return (startDay, lotteryPeriod, claimperiod);
    }

