        require(annouced, "Past Lottery not announced");
        require(block.timestamp>claimperiod, "Claim Period Not Over Yet");
        payable(msg.sender).transfer((address(this).balance));
        updateLottery();
        startDay = date;
        lotteryPeriod = startDay + _duration * 1 minutes;
        annouced = false;
    }
 
