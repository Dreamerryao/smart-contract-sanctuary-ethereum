pragma solidity ^0.8.10;
contract FlattenSubnetV3 is
    Create2,
    Ownable,
    Pausable,
    ReentrancyGuard,
    IERC721Receiver,
    AxelarExecutable
{
    using StringToAddress for string;
    using AddressToString for address;

    IAxelarGasService public immutable gasReceiver;
    address public tokenTemplate;

    mapping(string => address) public receiverContractMapping;
    mapping(address => address) public rootToChildToken;
    mapping(address => bool) public authorizedAddress;

    bytes32 public constant DEPOSIT = keccak256('DEPOSIT');
    bytes32 public constant MAP_TOKEN = keccak256('MAP_TOKEN');

    event TokenMapped(address indexed rootToken, address indexed childToken);
    event MintERC721(address indexed rootToken, address indexed user, string indexed fromChain, uint256 tokenId);
    event ManualMintOperation(address indexed childToken, address indexed from, address indexed to, uint256 tokenId);
    event WithdrawMappingERC721(
        address indexed rootToken,
        address indexed childToken,
        address indexed userAddress,
        string destinationChain,
        uint256 tokenId
    );
    event DepositMappingERC721(
        address indexed rootToken,
        address indexed childToken,
        address indexed userAddress,
        string destinationChain,
        uint256 tokenId
    );

    modifier onlyAuth() {
        require(authorizedAddress[msg.sender], 'WITHOUT_AUTH');
        _;
    }

    receive() external payable {}

    fallback() external payable {}

    constructor(
        address gateway_,
        address gasReceiver_,
        address tokenTemplate_
    ) AxelarExecutable(gateway_) {
        gasReceiver = IAxelarGasService(gasReceiver_);
        tokenTemplate = tokenTemplate_;
        require(_isContract(tokenTemplate_), 'Token template is not contract');
    }

    function onERC721Received(
        address,
        address,
        uint256,
        bytes calldata
    ) external pure override returns (bytes4) {
        return this.onERC721Received.selector;
    }

    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }

    function changeAuthAddress(address _authAddress, bool _bool) external onlyOwner {
        authorizedAddress[_authAddress] = _bool;
    }

    function updateReceiverContractMapping(string calldata destchain, address destcontract) external onlyOwner {
        // receiverContractMapping[destchain] = ContractInfo({destchain: destchain, contractAddress: destcontract});
        receiverContractMapping[destchain] = destcontract;
    }

    function manualMintOperation(
        address childToken,
        address to,
        uint256 tokenId,
        bytes memory data
    ) external onlyAuth {
        IFxERC721(childToken).mint(to, tokenId, data);
        emit ManualMintOperation(childToken, address(this), to, tokenId);
    }

    function deposit(
        address childToken,
        uint256 tokenId,
        string memory destinationChain,
        bytes memory data
    ) external payable whenNotPaused nonReentrant {
        address receiveAddress = receiverContractMapping[destinationChain];

        IFxERC721 childTokenContract = IFxERC721(childToken);
        address rootToken = childTokenContract.connectedToken();
        string memory stringAddress = receiveAddress.toString();

        require(
            childToken != address(0x0) && rootToken != address(0x0) && childToken == rootToChildToken[rootToken],
            'NO_MAPPED_TOKEN'
        );

        childTokenContract.burn(tokenId);

        bytes memory payload = abi.encode(DEPOSIT, abi.encode(rootToken, childToken, destinationChain, tokenId, data));

        gasReceiver.payNativeGasForContractCall{value: msg.value}(
            address(this),
            destinationChain,
            stringAddress,
            payload,
            msg.sender
        );
        gateway.callContract(destinationChain, stringAddress, payload);

        emit DepositMappingERC721(rootToken, childToken, msg.sender, destinationChain, tokenId);
    }

    function withdraw(
        address childToken,
        uint256 tokenId,
        string memory destinationChain,
        bytes memory data
    ) external payable whenNotPaused nonReentrant {
        // ContractInfo memory receiverContract = receiverContractMapping[destchain];
        address receiveAddress = receiverContractMapping[destinationChain];

        IFxERC721 childTokenContract = IFxERC721(childToken);
        address rootToken = childTokenContract.connectedToken();
        string memory stringAddress = receiveAddress.toString();

        require(
            childToken != address(0x0) && rootToken != address(0x0) && childToken == rootToChildToken[rootToken],
            'NO_MAPPED_TOKEN'
        );

        childTokenContract.burn(tokenId);

        bytes memory payload = abi.encode(rootToken, childToken, msg.sender, tokenId, data);

        gasReceiver.payNativeGasForContractCall{value: msg.value}(
            address(this),
            destinationChain,
            stringAddress,
            payload,
            msg.sender
        );
        gateway.callContract(destinationChain, stringAddress, payload);

        emit WithdrawMappingERC721(rootToken, childToken, msg.sender, destinationChain, tokenId);
    }

    function _execute(
        string calldata sourceChain,
        string calldata sourceAddress,
        bytes calldata payload
    ) internal override {
        require(sourceAddress.toAddress() == receiverContractMapping[sourceChain], 'NOT_A_LINKER');

        (bytes32 syncType, bytes memory syncData) = abi.decode(payload, (bytes32, bytes));

        if (syncType == DEPOSIT) {
            _syncDeposit(syncData);
        } else if (syncType == MAP_TOKEN) {
            _mapToken(syncData);
        } else {
            revert('SwaggaCrossChainAxelarSubnet: INVALID_SYNC_TYPE');
        }
    }

    function _syncDeposit(bytes memory syncData) internal {
        (address rootToken, address to, string memory destinationChain, uint256 tokenId, bytes memory depositData) = abi
            .decode(syncData, (address, address, string, uint256, bytes));

        address childToken = rootToChildToken[rootToken];
        IFxERC721(childToken).mint(to, tokenId, depositData);

        emit MintERC721(rootToken, to, destinationChain, tokenId);
    }

    function _mapToken(bytes memory syncData) internal {
        (address rootToken, , string memory name, string memory symbol) = abi.decode(
            syncData,
            (address, string, string, string)
        );

        require(rootToChildToken[rootToken] == address(0x0), 'ALREADY_MAPPED');

        bytes32 salt = keccak256(abi.encodePacked(rootToken));
        address childToken = createClone(salt, tokenTemplate);

        IFxERC721(childToken).initialize(address(this), rootToken, name, symbol);

        rootToChildToken[rootToken] = childToken;

        emit TokenMapped(rootToken, childToken);
    }

    function _isContract(address _addr) private view returns (bool) {
        uint32 size;
        assembly {
            size := extcodesize(_addr)
        }
        return (size > 0);
    }
}