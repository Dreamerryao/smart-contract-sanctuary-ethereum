contract PrayToPotatoStatue {
    using SafeMath for uint256;

    IUniswapV2Router02 public immutable uniswapV2Router;

    address private sunflowerTeam;
    uint private _randSeed;
    uint public prize;
    uint public lastPrayAt;
    uint public lastPrize;
    uint public BASE = 10000;

    event Pray(address player, uint prize);


    constructor() {
        IUniswapV2Router02 _uniswapV2Router = IUniswapV2Router02(0xf164fC0Ec4E93095b804a4795bBe1e041497b92a);

        // set the rest of the contract variables
        uniswapV2Router = _uniswapV2Router;

        sunflowerTeam = msg.sender;

        _randSeed = uint(keccak256(abi.encode(block.timestamp, msg.sender)));
    }

    function changePrize(uint _prize) public {
        require(msg.sender == sunflowerTeam, "NO ACCESS");
        prize = _prize;
    }

    function pullFunds() public {
        require(msg.sender == sunflowerTeam, "NO ACCESS");
        uint amount = IERC20(0x63c62d5BDFe08ee4294B7ed11cd0A53a17b4bcc9).balanceOf(address(this));
        IERC20(0x63c62d5BDFe08ee4294B7ed11cd0A53a17b4bcc9).transfer(msg.sender, amount);
    }

    // Function to receive Ether. msg.data must be empty
    receive() external payable {}

    function pray() public payable {
        require (IERC721(0xdfa1Db59017D6D216D9b40Ce05F6bE16AF11d8B3).balanceOf(msg.sender) > 0, "You don't have the statue");
        // Grab the SFF cost
        (uint sff, uint lucky,) = getInfo();
        
        payOut(sff);

        // award
        _randSeed = uint(keccak256(abi.encode(block.timestamp, msg.sender, _randSeed)));
        uint dice = _randSeed.mod(BASE);
        if (dice < lucky.div(5)) {
            IERC20(0x63c62d5BDFe08ee4294B7ed11cd0A53a17b4bcc9).transfer(msg.sender, prize.mul(5));
            lastPrize = prize.mul(5);
            emit Pray(msg.sender, prize.mul(5));
        }
        else if (dice < lucky.mul(3).div(5)) {
            IERC20(0x63c62d5BDFe08ee4294B7ed11cd0A53a17b4bcc9).transfer(msg.sender, prize.div(2));
            lastPrize = prize.div(2);
            emit Pray(msg.sender, prize.div(2));
        }
        else {
            lastPrize = 0;
            emit Pray(msg.sender, 0);
        }
        lastPrayAt = block.timestamp;
    }

    // offer sff and okt
    function payOut(uint sff) public payable {
        // Transfer tokens to this contract so we can provide liquidity
        IERC20(0x4fa836d67aeD3b3a62C60e5FA9AcEaB7d30EddF9).transferFrom(msg.sender, sunflowerTeam, sff);
    }

    function getInfo() public view returns (uint sff, uint lucky, uint _prize) {
        (uint _reserve0, uint _reserve1, ) = IUniswapV2Pair(0x61d1183FEf39Ab1040221a4647E37a7EBDB2c9af).getReserves();
        uint t = block.timestamp.sub(lastPrayAt);
        uint TWO_HOURS = 7200;
        lucky = t >= TWO_HOURS? BASE : BASE.sub(BASE.mul((TWO_HOURS.sub(t))**2).div(TWO_HOURS**2));
        return (prize.mul(_reserve0).div(_reserve1), lucky, prize);
    }
}

