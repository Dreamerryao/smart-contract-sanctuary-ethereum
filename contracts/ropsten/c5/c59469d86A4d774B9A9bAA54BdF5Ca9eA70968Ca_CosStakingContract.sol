pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/math/SafeCast.sol";


contract CosStakingContract is ERC20, ReentrancyGuard {
    IERC20 internal cosContract;

    event Stake(address indexed staker, uint256 amount);
    event Withdraw(address indexed withdrawer, uint256 amount);
    event Claim(address indexed calimer, uint256 claimedAmount);

    using SafeCast for uint256;

    struct StakeStruct {
        uint128 amount;
        uint128 since;
    }
    
    struct StakeHolder {
        address user;
        StakeStruct[] stakes;
        uint96 nextClaimIndex;
    }
    
    mapping(address => StakeHolder) internal stakerToStakeHoldersMap;

    constructor(address _cotAddress) ERC20("StakingCosplayToken", "sCOT") {
        cosContract = IERC20(_cotAddress);
    }

    function stake(uint256 amount) external nonReentrant returns (bool) {
        cosContract.transferFrom(msg.sender, address(this), amount);
        _mint(msg.sender, amount);
        emit Stake(msg.sender, amount);
        return true;
    }

    function withdraw(uint256 amount) external nonReentrant {
        require(balanceOf(msg.sender) >= amount, "withdraw amount exceeds balance");
        StakeHolder storage stakeHolder = stakerToStakeHoldersMap[msg.sender];
        StakeStruct memory newStake = StakeStruct(amount.toUint128(), block.timestamp.toUint128());
        if (stakeHolder.user == address(0x0)) {
            stakeHolder.stakes.push(newStake);
            stakeHolder.user = msg.sender;
            stakeHolder.nextClaimIndex = 0;
        } else {
            stakeHolder.stakes.push(newStake);
        }
        _burn(msg.sender, amount);
        emit Withdraw(msg.sender, amount);
    }

    function claim() external nonReentrant {
        StakeHolder memory stakeHolder = stakerToStakeHoldersMap[msg.sender];
        require(stakeHolder.user != address(0x0), "message sender is not stake token holder");
        require(stakeHolder.stakes[stakeHolder.nextClaimIndex].since != 0, "message sender dosen't have valid stake");

        uint256 claimedAmount = 0;
        for (uint96 j = stakeHolder.nextClaimIndex; j < stakeHolder.stakes.length; j++) {
            StakeStruct memory targetStake = stakeHolder.stakes[j];
            if (targetStake.since + 30 days >= block.timestamp) {
                break;
            }
            cosContract.transfer(stakeHolder.user, targetStake.amount);
            claimedAmount += targetStake.amount;
            stakerToStakeHoldersMap[msg.sender].nextClaimIndex = j + 1;
        }
        emit Claim(msg.sender, claimedAmount);
    }

    function getUserInfo(address account) external view returns (StakeStruct[] memory stakes, uint256 nextClaimIndex, uint256 claimableScot, uint256 lockedScot) {
        StakeHolder memory stakeHolder = stakerToStakeHoldersMap[account];
        if (stakeHolder.user == address(0x0)) {
            StakeStruct[] memory ret = new StakeStruct[](0);
            return (ret, 0, 0, 0);
        }

        uint96 stakeCount = stakeHolder.stakes.length.toUint96();
        claimableScot = 0;
        lockedScot = 0;
        stakes = new StakeStruct[](stakeCount);
        for (uint i = 0; i < stakeCount; i++) {
          StakeStruct memory currentStake = stakeHolder.stakes[i];
          stakes[i] = StakeStruct(currentStake.amount, currentStake.since);
          if (i < stakeHolder.nextClaimIndex) {
              continue;
          }
          lockedScot += currentStake.amount;
          if (block.timestamp > currentStake.since + 30 days) {
              claimableScot += currentStake.amount;
          }
        }
        nextClaimIndex = stakeHolder.nextClaimIndex;
    }
}

