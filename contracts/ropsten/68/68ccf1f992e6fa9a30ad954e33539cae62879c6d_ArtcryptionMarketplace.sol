        FixedPriceSale memory sale;
        sale = FixedPriceSale(
            price,
            nftAddress,
            tokenContractIfPriceIsInERC20,
            itemTokenId,
            curators
        );
        allFixedPriceSales.push();
        allFixedPriceSales[totalFixedPriceSalesStarted] = sale;
        saleIdToSaleCreator[fixedPriceSaleID] = _msgSender();
        totalFixedPriceSalesStarted++;

        emit FixedPriceSaleStarted(
            _msgSender(),
            nftAddress,
            fixedPriceSaleID,
            price,
            block.timestamp
