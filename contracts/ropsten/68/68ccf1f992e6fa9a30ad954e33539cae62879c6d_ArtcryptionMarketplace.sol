            );
            if (royaltyRecipient != address(0)) {
                payable(royaltyRecipient).transfer(royaltyCut);
            }

            for (uint256 i = 0; i < sale.curators.length; i++) {
                if (sale.curators[i] != address(0)) {
                    payable(sale.curators[i]).transfer(
                        (sale.price - royaltyCut - platformFeeCut) /
                            (sale.curators.length + 1)
                    );
                }
            }
            payable(saleCreator).transfer(
                (sale.price - royaltyCut - platformFeeCut) /
                    (sale.curators.length + 1)
            );
        }

        if (isERC721) {
            IERC721(sale.nftAddress).transferFrom(
                saleCreator,
                _msgSender(),
                sale.itemTokenId
            );
        } else {
            IERC1155(sale.nftAddress).safeTransferFrom(
                saleCreator,
                _msgSender(),
                sale.itemTokenId,
                1,
                ""
            );
        }
        emit FixedPriceSaleConcluded(
            saleCreator,
            _msgSender(),
            sale.nftAddress,
            fixedPriceSaleId,
            sale.price,
            erc20Payment,
            block.timestamp
        );
    }

    function setPlatformFee(uint16 newFee) external onlyOwner {
        _platformFee = newFee;
    }

    function createRoyaltyException(address _contract, uint96 royalty)
        external
        onlyOwner
    {
        _platformFeeExceptions[_contract] = royalty;
    }
