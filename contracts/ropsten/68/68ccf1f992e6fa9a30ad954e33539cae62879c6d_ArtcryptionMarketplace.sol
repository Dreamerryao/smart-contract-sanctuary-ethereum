        address seller,
        address nftAddress,
        uint256 fixedPriceSaleId,
        uint256 price,
        uint256 saleStartedAt
    );
    event FixedPriceSaleConcluded(
        address buyer,
        address seller,
        address nftAddress,
        uint256 fixedPriceSaleId,
        uint256 priceBoughtAt,
        bool ERC20PaymentUsed,
        uint256 timePurchased
    );
    mapping(uint256 => address) saleIdToSaleCreator;

    constructor(uint16 platformFee, address royalty) {
        _platformFee = platformFee;
        allFixedPriceSales.push();
        totalFixedPriceSalesStarted++;
        _royalty = royalty;
    }

    function startFixedPriceSale(
        uint256 itemTokenId,
        address nftAddress,
        uint256 price,
        address tokenContractIfPriceIsInERC20,
        address[] memory curators
    ) public returns (uint256 fixedPriceSaleID) {
        require(
            nftAddress.supportsInterface(IID_IERC721) ||
                nftAddress.supportsInterface(IID_IERC1155),
            "Not a NFT contract"
