pragma solidity ^0.8.0;
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC721/extensions/IERC721Enumerable.sol";


contract TokensOf {

    function getIdsByContractAndOwner(
        address contractAddress,
        address owner) public view returns(uint256[] memory ids)
    {
        uint256 len = IERC721Enumerable(contractAddress).balanceOf(owner);
        uint256 total = IERC721Enumerable(contractAddress).totalSupply();
        uint256[] memory idList = new uint256[](len);
        if (len == 0) return idList;
        uint k;
        for (uint i = 0; i <= total; i++) {
            if (k == len) break;
            if (getOwnerOf(contractAddress,i) == owner) {
                idList[k] = i;
                k++;
            }
        }
        return idList;
    }

    function getIdsByIndex(
        address contractAddress,
        address owner,
        uint256 from,
        uint256 amount) public view returns(uint256[] memory ids)
    {
        uint256 len = IERC721Enumerable(contractAddress).balanceOf(owner);
        if (len - from < amount) { amount = len - from;}
        uint256[] memory idList = new uint256[](amount);
        for (uint256 i = 0; i < amount; i++) {
            idList[i] = IERC721Enumerable(contractAddress).tokenOfOwnerByIndex(owner,i + from);
        }
        return idList;
    }

    function getIdsByContractAndOwnerRange(
        address contractAddress,
        address owner,
        uint256 from,
        uint256 to) public view returns(uint256, uint256[] memory ids)
    {
        uint256 balance = IERC721(contractAddress).balanceOf(owner);
        uint len = to - from < balance ? to - from : balance;
        uint256[] memory idList = new uint256[](len);
        if (balance == 0) return (0, idList);
        uint founded;
        for (uint i = from; i <= to; i++) {
            if (founded == len) break;
            if (getOwnerOf(contractAddress,i) == owner) {
                idList[founded] = i;
                founded++;
            }
        }
        return (founded, idList);
    }

    function getOwnerOf(address contractAddress, uint256 id) internal view returns(address){
        try IERC721Enumerable(contractAddress).ownerOf(id) returns(address currentOwner) {
            return(currentOwner);
        } catch {}
        return(address(0));
    }
}

