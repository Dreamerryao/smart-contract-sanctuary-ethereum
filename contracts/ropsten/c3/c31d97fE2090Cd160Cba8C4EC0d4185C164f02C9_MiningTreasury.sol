contract MiningTreasury {
    using BoringMath for uint256;
    using BoringMath128 for uint128;
    using BoringERC20 for IERC20;
    using SignedSafeMath for int256;

    address public airdrop;
    address public staking;
    address public payback;
    address public other;
    address public plexus;
    address public owner;

    constructor(address _plexus) public {
        owner = msg.sender;
        plexus = _plexus;
    }

    function paybackClaim(address _user, uint256 _amount) public {
        require(payback != address(0) && msg.sender == payback);
        if (IERC20(plexus).balanceOf(address(this)) > _amount) {
            TransferHelper.safeTransfer(plexus, _user, _amount);
        }
    }

    function airdropClaim(address _user, uint256 _amount) public {
        require(airdrop != address(0) && msg.sender == airdrop);
        if (IERC20(plexus).balanceOf(address(this)) > _amount) {
            TransferHelper.safeTransfer(plexus, _user, _amount);
        }
    }

    function stakingClaim(address _user, uint256 _amount) public {
        require(staking != address(0) && msg.sender == staking);
        if (IERC20(plexus).balanceOf(address(this)) > _amount) {
            TransferHelper.safeTransfer(plexus, _user, _amount);
        }
    }

    function otherClaim(address _user, uint256 _amount) public {
        require(other != address(0) && msg.sender == other);
        if (IERC20(plexus).balanceOf(address(this)) > _amount) {
            TransferHelper.safeTransfer(plexus, _user, _amount);
        }
    }

    function setPayback(address _payback) public {
        require(msg.sender == owner);
        payback = _payback;
    }

    function setAirdrop(address _airdrop) public {
        require(msg.sender == owner);
        airdrop = _airdrop;
    }

    function setStaking(address _staking) public {
        require(msg.sender == owner);
        staking = _staking;
    }

    function setOther(address _other) public {
        require(msg.sender == owner);
        other = _other;
    }
}

