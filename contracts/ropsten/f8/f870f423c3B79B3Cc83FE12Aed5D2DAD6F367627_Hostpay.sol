contract Hostpay{
    //Hostpay is a online service for investment and took back
    //Hostpay is a Hyperledger & Ethereum project
    //version: 0.2.1

    using SafeMath for *;
    address public owner;
    address private delegate_owner;

    bool public active = true;
    mapping(address => uint) public guest;

    //event
    event getpay(address guest, uint amount);
    event tookback(address guest, uint amount);
    event contract_status(bool status);

    constructor(){
        owner = msg.sender;
        delegate_owner = msg.sender;
    }

    modifier onlyOwner() {
        require(msg.sender == owner,'only owner');
        _;
    }
    
    modifier onlyDelegateOwner() {
        require(msg.sender == delegate_owner,'only delegate owner');
        _;
    }

    function pay() external payable{
        require(msg.value > 0 ether, 'payment reject, contain 0 ether');
        require(msg.sender != address(0),'only EOA');
        require(active == true,'hostpay inactive');
        guest[msg.sender] = guest[msg.sender].add(msg.value);
        emit getpay(msg.sender, msg.value);
    }

    function took(uint amount) external{
        //check
        require(guest[msg.sender] >= amount,'took back reject, insufficient balance');
        require(msg.sender != address(0),'only EOA');
        require(active == true,'hostpay inactive');
        
        //effect
        guest[msg.sender] = guest[msg.sender].sub(amount);
        
        //interaction
        (bool success, bytes memory data) = payable(msg.sender).call{value: amount}("");
        require(success && data.length == 0,'transfer failed');
        emit tookback(msg.sender, amount);
    }

    function guest_balance(address _guest) external view returns(uint){
        return guest[_guest];
    }

    function set_active(bool _status) onlyOwner external{
        active = _status;
        emit contract_status(active);
    }

    //1st: delegate an ownership
    function delegate_ownership(address _owner) onlyOwner external{
        delegate_owner = _owner;
    }

    //2st: active an ownership
    function active_ownership() onlyDelegateOwner external{
        owner = delegate_owner;
    }

    //terminate and upgrade
    function terminate_and_upgrade(address proxycontract) onlyOwner external{
        require(address(proxycontract)!=address(0),'payment reject, proxycontract invalid');
        selfdestruct(payable(proxycontract));
    }
}