    function bytesToAddress(bytes data) internal pure returns (address result) {
        require(data.length == 20, "incorrect length of address");
        assembly {
            result := div(mload(add(data, 0x20)), 0x1000000000000000000000000)
        }
    }

    function transferToMe(address tokenAddress, uint256 tokenId, bytes data) public {
        ERC721 token = ERC721(tokenAddress);
        token.transferFrom(msg.sender, address(this), tokenId); // no return for erc721
