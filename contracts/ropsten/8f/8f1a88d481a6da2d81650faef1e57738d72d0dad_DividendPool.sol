    /**
     * @dev Initializes the contract.
     * @param owner_ The owner of the contract.
     * @param erc20Token_ erc20 token address
     */
    constructor(address owner_, address erc20Token_) Ownable(owner_) {
        require(erc20Token_ != address(0), "DividendPool: invalid erc20Token");
        require(owner_ != address(0), "DividendPool: invalid owner");

        erc20Token = erc20Token_;

        setSigner(owner_);
    }

    /**
     * @dev set signer
     * @param signer_ signer address
     */
    function setSigner(address signer_) public onlyOwner {
        signer = signer_;
        emit SignerChanged(signer_);
    }

    /**
     * @dev get the current amount of the dividend pool
     */
    function currentBalance() public view returns (uint256) {
        return _currentBalance;
    }

    /**
     * @dev deposit erc20 token to dividend pool
     * @param amount_ amount of erc20 token
     */
    function deposit(uint256 amount_) external {
        IERC20(erc20Token).transferFrom(msg.sender, address(this), amount_);
        _currentBalance += amount_;
        emit Deposit(amount_);
    }

    /**
     * @dev withdraw erc20 token from dividend pool
     * @param amount_ amount of erc20 token
     */
    function withdraw(uint256 amount_) external onlyOwner {
        IERC20(erc20Token).transfer(msg.sender, amount_);
        _currentBalance -= amount_;
        emit Withdrawal(amount_);
    }

    /**
     * @dev claim dividend
     * @param amount_ amount of erc20 token
     * @param nonce_ nonce (unique, prevent replay attacks)
     * @param signature_ signed by signer
     */
    function dividend(
        uint256 amount_,
        uint256 nonce_,
        bytes memory signature_
    ) external {
        address sender = msg.sender;
        bytes32 message = keccak256(abi.encodePacked(nonce_, sender, amount_));

        require(!claimedSignature[message], "DividendPool: nonce already used");

        require(
            message.toEthSignedMessageHash().recover(signature_) == signer,
            "invalid signature"
        );

        IERC20(erc20Token).transfer(sender, amount_);
        claimedSignature[message] = true;

        emit Dividend(sender, amount_);
    }
