        require(sucess, "AVAX_TRANSFER_FAILED");
    }

    /// game token should be transferred to the contarct
    /// participants should be increased
    /// limit should be checked
    function entryGame() external{
        // check if the user is not enterred the game or don't have a subcription
        require(!isGameParticipant[msg.sender][followingGameId], "PARTICIPATE_ALREADY");
        require(subcriptors[msg.sender] == 0, "INVALID_PARTICIPATE");

        // check the limit
        participantsCount += 1;
        if (participantsLimit !=0){
            require(participantsCount <= participantsLimit, "LIMIT_EXEED");
        }

        // send money to the lottery
        gameToken.safeTransferFrom(msg.sender, address(this), participationFee);
        
        isGameParticipant[msg.sender][followingGameId] = true;


        Lottery storage lottery = lotteries[followingGameId];

        lottery.participants.push(msg.sender);
    }

