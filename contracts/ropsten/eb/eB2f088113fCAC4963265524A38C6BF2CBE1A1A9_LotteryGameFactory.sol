pragma solidity 0.8.9;

import "@openzeppelin/contracts/access/Ownable.sol";
import "../interfaces/ILotteryGameFactory.sol";
import "../interfaces/IRewardDistribution.sol";
import "./CustomLotteryGame.sol";

contract LotteryGameFactory is ILotteryGameFactory, Ownable {
    uint256 private gameIds;
    mapping(address => uint256) private customLotteryGameIds;

    IRewardDistribution public rewardDistribution;
    address[] public addressesOfCustomLotteryGames;
    mapping(address => bool) public autorizedCustomLotteryGames;

    /**
     * @notice setting address to rewardDistributed contract
     */
    function setRewardDistributionAddress(address _rewardDistribution)
        external
        onlyOwner
    {
        require(_rewardDistribution != address(0), "ZERO_ADDRESS");
        rewardDistribution = IRewardDistribution(_rewardDistribution);
    }

    /**
     * @dev function creating new instance of CustomLotteryGame contract
     * @param participationFee fee to participate in the game
     * @param countOfWinners amount of winners
     * @param winnersPercentages list of percanage for each winner
     * @param callerFeePercents fee
     * @param isDateTimeRequired boolean value
     * @param governance inctance of governance contract
     **/
    function createLottery(
        uint256 participationFee,
        uint256 countOfWinners,
        uint256[] memory winnersPercentages,
        uint256 callerFeePercents,
        bool isDateTimeRequired,
        IGovernance governance
    ) external onlyOwner {
        require(
            participationFee > 0,
            "LotteryGameFactory: participation fee cannot be less or equal zero"
        );

        // create CustomLotteryGame instance
        CustomLotteryGame lottery = new CustomLotteryGame(
            participationFee,
            countOfWinners,
            winnersPercentages,
            callerFeePercents,
            isDateTimeRequired,
            governance
        );

        address lotteryGameAddress = address(lottery);

        addressesOfCustomLotteryGames.push(lotteryGameAddress);
        autorizedCustomLotteryGames[lotteryGameAddress] = true;
        customLotteryGameIds[lotteryGameAddress] = gameIds;
        gameIds++;

        emit CreatedLottery(
            participationFee,
            countOfWinners,
            winnersPercentages,
            callerFeePercents,
            isDateTimeRequired,
            address(governance)
        );

        // authorized in the RewardDistibution contract
        rewardDistribution.addNewGame(lotteryGameAddress);
    }

    /**
     * @dev Function deleting lottery game (the game is invalid)
     * @param game address of the required game to delete
     **/
    function deleteLottery(address game) external override onlyOwner {
        require(
            autorizedCustomLotteryGames[game],
            "LotteryGameFactory: Game is already invalid"
        );

        // delete CustomLotteryGame instance
        autorizedCustomLotteryGames[game] = false;

        for (uint256 i = customLotteryGameIds[game]; i < addressesOfCustomLotteryGames.length - 1; i++) {
            addressesOfCustomLotteryGames[i] = addressesOfCustomLotteryGames[i + 1];
        }
        addressesOfCustomLotteryGames.pop();
        gameIds--;

        emit DeletedLottery(game);

        // deteted from the RewardDistibution contract
        rewardDistribution.removeGame(game);
    }

    /**
     * @dev Function creating multiple games at one transaction
     * @param gamesList list of games addresses
     **/
    function entryMultipleGames(address[] memory gamesList)
        external
        view
        override
        onlyOwner
        returns (bool)
    {
        require(
            gamesList.length != 0,
            "LotteryGameFactor: games list is empty"
        );

        for (uint256 i = 0; i < gamesList.length; i++) {
            address gameAddress = gamesList[i];
            require(gameAddress != address(0), "ZERO_ADDRESS");
            require(
                autorizedCustomLotteryGames[gameAddress],
                "LotteryGameFactor: game address is not registered"
            );
        }

        return true;
    }
}

