// SafeMath dependency
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

// Contract definition
contract Practice {
    // Initialize the use of SafeMath over uint256 data types
    // uint256 = Unsigned integer of maximum 256 bytes
    using SafeMath for uint256;

    // Define owner address, in this case, the deployer
    address public owner = msg.sender;

    // Define custom variables and their data-type
    // Public fields also inherently create a "get" method that can be called by anyone
    string public message;
    string public fullName;
    int256 public age;
    int256 public year;

    // The constructor function runs a single time, when the contract is deployed
    // This can be considered a function that is used for setup
    constructor() {
        // set initial values for the pre-set variables
        message = "No message currently set";
        fullName = "";
        age = 0;
        year = 2000;
    }

    // A modifier can be simply described as a permission and/or role
    // In our case, only allows the owner to call methods that make use of this modifier
    modifier ownerOnly() {
        require(msg.sender == owner, "PRACTICE: UNAUTHORIZED");
        _;
    }

    // Method that only the contract owner can run, to set a new message
    // Notice the use of the ownerOnly modifier ---------- ↓
    /**                                                    |               */
    function setMessage(string memory _message) /**        |               */
        public                                  /**        |               */
        ownerOnly   /** <--------------------------------- ←               */
        returns (string memory)
    {
        // Return an error message upon attempting to set an empty message
        // It's a good practice to prefix error messages with the contract name, especially when using multiple contracts
        require(bytes(_message).length > 0, "PRACTICE: EMPTY_MESSAGE_TEXT");
        message = _message;
        return message;
    }

    // Method that only the contract owner can run, to set a new full name
    // As we did in the setMessage method, observe that this makes use of the ownerOnly modifier
    function setName(string memory _fullName)
        public
        ownerOnly
        returns (string memory)
    {
        // Return an error message upon attempting to set an empty name
        require(bytes(_fullName).length > 0, "PRACTICE: EMPTY_NAME_TEXT");
        fullName = _fullName;
        return fullName;
    }

    // Public method that can be called by anyone (any address)
    function setAge(int256 _age) public returns (int256) {
        // Return an error message upon attempting to set an age with a value that is not over 18
        require(int256(_age) >= 18, "PRACTICE: AGE_BELOW");
        age = _age;
        return age;
    }

    // Public method that can be called by anyone (any address)
    function setYear(int256 _year) public returns (int256) {
        // Returns an error message upon attempting to set a zero value for the year method
        require(int256(_year) > 0, "PRACTICE: YEAR_EQ_ZERO");
        year = _year;
        return year;
    }
}

