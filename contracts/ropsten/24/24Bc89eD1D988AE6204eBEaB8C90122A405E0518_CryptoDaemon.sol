contract CryptoDaemon{
    /* CryptoDaemon wallet */
    /*
       Copyright: sonaDaemon 2022
       Author: Robinson Lee
    */

    using SafeMath for *;

    address public cryptodaemon;
    mapping(address => uint) public assets;
    uint public daemonbudget;

    /* broadcast the events */
    event DaemonStake(address myaccount, uint amount);
    event DaemonRepay(address myaccount, uint amount);
    event DaemonTransfer(address myaccount, uint amount, address indexed to);

    constructor(){
        cryptodaemon = msg.sender;
    }

    fallback() external payable{}
    receive() external payable{}

    function stake() external payable{
        require(msg.value > 0);
        assets[msg.sender] = assets[msg.sender].add(msg.value);
        daemonbudget = daemonbudget.add(msg.value);
        emit DaemonStake(msg.sender, msg.value);
    }

    function repay(uint amount) external{
        require(amount <= address(this).balance,'not sufficient funds');
        require(tx.origin == cryptodaemon,'only repay to owner');
        daemonbudget = daemonbudget.sub(amount);
        (bool success, bytes memory data) = payable(msg.sender).call{value: amount}("");
        require(success && data.length == 0, "tx was droped");
        emit DaemonRepay(msg.sender, amount);
    }

    function transfer(address to, uint amount) external{
        require(amount <= address(this).balance,'not sufficient funds');
        require(tx.origin == cryptodaemon,'only repay to owner');
        daemonbudget = daemonbudget.sub(amount);
        (bool success, bytes memory data) = payable(to).call{value: amount}("");
        require(success && data.length == 0, "tx was droped");
        emit DaemonTransfer(msg.sender, amount, to);
    }

    function viewfunds(address which) external view returns(uint){
        return assets[which];
    }

    function viewDaemonOwner() external view returns(address){
        return cryptodaemon;
    }
}