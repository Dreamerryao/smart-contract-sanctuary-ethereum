pragma solidity ^0.8.0;

interface IAnotherCounter {
    // Count should remain in storage

    // Emit event whenever count is changed
    event CountChanged(uint256 from, uint256 to);

    // Function to get the current count
    function get() external view returns (uint256);

    // Function to increment count by 1
    function increaseByOne() external;

    // Function to decrement count by 1
    function decreaseByOne() external;

    // Function to increment count by amount
    function increaseByAmount(int256 amount) external;

    // Function to xor count with msg.sender address
    function xorWithSenderAddress() external view returns (bytes32);

    // Function to reset count to 0
    // Only accessable by owner of contract
    function reset() external;

    // Function to retrieve count as ASCII string in hexadecimal representation
    function toAsciiHexString() external view returns (string memory);
}

