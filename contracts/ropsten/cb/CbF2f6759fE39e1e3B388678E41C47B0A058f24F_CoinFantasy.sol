pragma solidity ^0.8.1;

import {LERC20, LERC20Permit} from "./library/LERC20Permit.sol";

contract CoinFantasy is LERC20Permit {
    address public ownerAddress;

    constructor(address _trustedForwarder, address _admin, address _recoverAdmin, uint256 _timelock, address _controllerAddress) 
        LERC20(
            100000000000000000000,                      // Total Supply
            "CoinFantasy",                              // Token Name
            "CFT",                                      // Token Symbol
