pragma solidity ^0.8.0;

import "./RewardToken.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

/**
 * One player will be owner of game
 */
contract P2EGame2Player_v2 is Ownable {
    uint256 public contractBalance;
    // this is the erc20 RewardToken contract address
    address public tokenAddress; // <-- INSERT DEPLYED ERC20 TOKEN CONTRACT HERE
    uint256 public maxSupply = 100000000000000000000; // <-- temporaily set manually for flexibility while in pre-alpha development
    uint256 public unit = 1000000000000000000; // <-- temporaily set manually for flexibility while in pre-alpha development
    uint256 public gameId;
    uint256 public fee = 5;

    // game data tracking
    struct Game {
        address treasury;
        address creator;
        address joiner;
        bool win; // creator winned ?
        uint256 balance;
        bool locked;
    }
    mapping(uint256 => Game) public games;
    // set-up event for emitting once character minted to read out values
    event CreateGame(uint256 id, address indexed creator);
    event StartGame(uint256 id, address indexed joiner);
    event EndGame(uint256 id, address indexed winner);
    event ClaimedGame(uint256 id, address indexed winner);

    constructor(address _gameTokenAddress) Ownable() {
        gameId = 0;
        tokenAddress = _gameTokenAddress;
    }

    function setRewardTokenAddress(address _gameTokenAddress) external onlyOwner returns (bool) {
        require(_gameTokenAddress != address(0), "P2EGame2Player_v2: reward Token address cannot be zero address");
        tokenAddress = _gameTokenAddress;
        return true;
    }

    function gameState(uint256 _gameId)
        external
        view
        returns (
            address,
            address,
            bool,
            uint256,
            bool,
            address
        )
    {
        return (
            games[_gameId].creator,
            games[_gameId].joiner,
            games[_gameId].win,
            games[_gameId].balance,
            games[_gameId].locked,
            games[_gameId].treasury
        );
    }

    function createGame(
        uint256 _t
    ) external returns (bool) {
        RewardToken token = RewardToken(tokenAddress);
        require(_t >= unit, "P2EGame: must insert more than 1 token");
        token.transferFrom(msg.sender, address(this), _t);

        contractBalance += _t;

        gameId++;

        games[gameId].creator = msg.sender;
        games[gameId].joiner = address(0);
        games[gameId].balance = _t;
        games[gameId].treasury = address(this);
        games[gameId].locked = true;

        emit CreateGame(gameId, msg.sender);

        return true;
    }

    function joinGame(
        uint256 _gameId,
        uint256 _t
    ) external returns (bool) {
        require(_gameId <= gameId, "P2EGame2Player_v2: Game is not created yet");
        require(!games[gameId].locked, "P2EGame2Player_v2: Game is ended already");
        require(games[gameId].balance <= _t, "P2EGame2Player_v2: Joiner should deposit more that balance");
        require(games[_gameId].joiner == address(0), "P2EGame2Player_v2: Game is already started");
        RewardToken token = RewardToken(tokenAddress);
        
        require(_t >= unit, "P2EGame: must insert more than 1 token");
        // transfer from player to the contract's address to be locked in escrow
        token.transferFrom(msg.sender, address(this), _t);

        games[_gameId].joiner = msg.sender;
        
        emit StartGame(_gameId, msg.sender);

        return true;
    }

    function endGame(uint256 _gameId, address _winner) external returns (bool) {
        require(games[_gameId].creator == msg.sender, "P2EGame2Player_v2: Only creator can end game");
        return endGameInternal(_gameId, _winner);
    }

    function endGameByOwner(uint256 _gameId, address _winner) external onlyOwner returns (bool) {
        return endGameInternal(_gameId, _winner);
    }

    function endGameInternal(uint256 _gameId, address _winner)
        internal
        returns (bool)
    {
        require(_gameId <= gameId, "P2EGame2Player_v2: Game is not started yet");
        require(_winner == games[_gameId].creator || _winner == games[_gameId].joiner, "P2EGame2Player_v2: Winner should be one of creator or joiner");

        // token.transfer(_winner, balances[_gameId].balance * (100 - fee) / 100);

        games[_gameId].win = _winner == games[_gameId].creator;
        games[_gameId].locked = false;

        emit EndGame(_gameId, _winner);

        return true;
    }

    function claimReward(uint256 _gameId) external returns (bool) {
        require(_gameId < gameId, "P2EGame2Player_v2: Game is not started yet");
        require(!games[_gameId].locked, "P2EGame2Player_v2: Game is still running");
        if (games[_gameId].win) {
            require(games[_gameId].creator == msg.sender, "P2EGame2Player_v2: Only winner can claim the rewards");
        } else {
            require(games[_gameId].joiner == msg.sender, "P2EGame2Player_v2: Only winner can claim the rewards");
        }

        RewardToken token = RewardToken(tokenAddress);
        token.transfer(msg.sender, games[_gameId].balance * (100 - fee) / 100);
        token.transfer(owner(), games[_gameId].balance * fee / 100);

        games[_gameId].balance = 0;

        emit ClaimedGame(_gameId, msg.sender);

        return true;
    }
}

