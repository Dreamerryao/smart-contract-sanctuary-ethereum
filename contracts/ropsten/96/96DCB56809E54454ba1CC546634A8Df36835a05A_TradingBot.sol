pragma solidity ^0.8.0;

import "./interfaces/IPancakeRouter.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

contract TradingBot {
    IPancakeRouter public pancakeRouter;

    uint256 public amountInPerTx = 10000000000000000000;
    mapping(address => address) public pairs;
    // uint256 public amountOutMin = amountInPerTx + 500000000000000000;
    address public owner;

    modifier onlyOwner() {
        require(msg.sender == owner);
        _;
    }

    constructor(IPancakeRouter _pancakeRouter) {
        pancakeRouter = _pancakeRouter;
        owner = msg.sender;
    }

    function approve(address token, address spender) external {
        IERC20(token).approve(spender, type(uint256).max);
    }

    function swap(address reserveIn, address reserveOut)
        external
        payable
        onlyOwner
    {
        address[] memory path = new address[](2);
        path[0] = reserveIn;
        path[1] = reserveOut;

        pancakeRouter.swapExactTokensForTokensSupportingFeeOnTransferTokens(
            amountInPerTx,
            0,
            path,
            owner,
            9648742161
        );
    }

    function withdraw(address toAddress, address _contract) external onlyOwner {
        IERC20(_contract).transfer(
            toAddress,
            IERC20(_contract).balanceOf(address(this))
        );
    }
}

