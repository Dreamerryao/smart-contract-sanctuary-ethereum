contract TestToken is Ownable {
    using SafeMath for uint256;

    string public name = "Test Token";
    string public symbol = "TST";
    uint8 public decimals = 18;

    mapping(address=>uint256) public balances;
    uint256 public totalSupply;

    uint256 public reward;
    uint256 public accRewardPerShare;

    constructor() {
        totalSupply = 0;
    }

    function issue(address account, uint256 amount) public onlyOwner {
        balances[account] = balances[account].add(amount);
        totalSupply = totalSupply.add(amount);
        updateRewardShare();
    }
    function redeem(address account, uint256 amount) public onlyOwner {
        balances[account] = balances[account].sub(amount);
        if (amount > totalSupply) {
            totalSupply = 0;
        }
        else {
            totalSupply = totalSupply.sub(amount);
        }
        updateRewardShare();
    }
    function updateRewardShare() internal {
        accRewardPerShare = accRewardPerShare.add(reward.mul(1e12).div(totalSupply));
    }
    function depositReward(uint256 _reward) public onlyOwner {
        reward = reward.add(_reward);
    }
    function earned(address account) public view returns(uint256) {
        return balances[account].mul(accRewardPerShare).div(1e12);
    }
}