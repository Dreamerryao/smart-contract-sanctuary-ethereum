pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "./BokkyPooBahsDateTimeLibrary.sol";
import "./CommonCalendar.sol";


contract DailyAuction is AccessControl {
    
    using BokkyPooBahsDateTimeLibrary for uint;
    using Counters for Counters.Counter;

    CommonCalendar assetToken; // ERC721 NFT.
    
    // Define roles
    bytes32 constant ADMIN_ROLE = keccak256("ADMIN_ROLE");
    
    // Parameters of the DailyAuction
    address payable beneficiary;
    address highestBidder;
    uint highestBid;
    uint startBid;
    bool auctionEnded = true;
    uint auctionEndTime;
    uint constant DAY_IN_SECONDS = 86400;
    uint constant timeOffset = 18000;
    uint minBidIncrementPercentage;
    uint currentDayBidCount = 0;
    
    struct AuctionSummary {
        address winner;
        uint amount;
        uint date;
        uint index;
    }
    
    // Contains the summaries of all auctions
    mapping (uint => AuctionSummary) internal auctionedDays;
    Counters.Counter private _auctionedDaysIndex;
    uint[] auctionedDaysIndex;
    
    mapping (address => uint) internal pendingReturns;
    
    enum BidStatus {
        Active,
        Withdrawn
    }
    
    struct BidDetails{
        address payable bidder;
        uint bidAmount;
        BidStatus bidStatus;
        uint timeOfBid;
        uint targetDay;
        uint index;
    }
    
    // Contains all bids grouped by day (timestamp)
    mapping (uint => mapping(uint => BidDetails)) internal bidListByDay;
    mapping (uint => uint) internal bidCountByDay;
    Counters.Counter private _bidListByDayIndex;
    
    // New bid event
    event LogNewBid(
            uint indexed timestamp, 
            uint index,
            address bidder,
            uint bidAmount
        );
        
    // New highest bid event
    event HighestBidIncrease(address bidder, uint amount, uint auctionDay);

    // New auction started
    event AuctionStarted(uint auctionDay);
    
    // Auction end event
    event AuctionEnded(address winner, uint amount);

    event MintItemTime(uint endtime, uint target);
    event MintItemAddress(address winner, address sender);
    
    ////// Insert a new bid in bidListByDay
    function insertBid() public payable {
            
        uint targetDay = auctionEndTime;
        
        bidListByDay[targetDay][currentDayBidCount] = BidDetails(
            payable(msg.sender),
            msg.value,
            BidStatus.Active,
            block.timestamp,
            targetDay,
            currentDayBidCount
        );
        
        emit LogNewBid(
            targetDay, 
            currentDayBidCount,
            msg.sender,
            msg.value
        );
        currentDayBidCount++;       
        bidCountByDay[targetDay] = currentDayBidCount; 
    }
    
    // CONSTRUCTOR
    constructor(CommonCalendar _assetToken) {
        assetToken = (_assetToken);
        beneficiary = payable(msg.sender);
        _setupRole(ADMIN_ROLE, beneficiary);
        minBidIncrementPercentage = 110;
        startBid = 0.05 ether;
    }
    
    //// Start auction
    function startAuction() internal {
        require(auctionEnded == true, "There's already an active auction");
        
        // Calculate auction end time
        uint todayPlus24Hours = block.timestamp + DAY_IN_SECONDS;
        todayPlus24Hours = todayPlus24Hours - timeOffset;
        
        uint tomorrowDay;
        uint tomorrowMonth;
        uint tomorrowYear;
        
        (tomorrowYear, tomorrowMonth, tomorrowDay) = BokkyPooBahsDateTimeLibrary.timestampToDate(todayPlus24Hours);
        
        auctionEndTime = getDateFromTimestamp(tomorrowYear, tomorrowMonth, tomorrowDay);
        
        // Set auction status to active
        auctionEnded = false;

        // Log new auction
        emit AuctionStarted(auctionEndTime);
    }

    // Send ether to beneficiary account
    function sendEther(address payable _to) internal {
        _to.transfer(highestBid);
    }
    
    //// End auction
    function endAuction() internal {
        
        if(block.timestamp < auctionEndTime){
             revert("The auction has not ended yet.");
        }
         
        if(auctionEnded){
             revert("Auction has already ended.");
        }
         
        auctionEnded = true;
        currentDayBidCount = 0;
        emit AuctionEnded(highestBidder, highestBid);
         
        // Create auction summary and attach it to auctionedDays
        // uint targetDay = auctionEndTime + DAY_IN_SECONDS;
        uint targetDay = auctionEndTime;
        // auctionedDays[targetDay].winner = highestBidder;
        // auctionedDays[targetDay].amount = highestBid;
        // auctionedDays[targetDay].date = targetDay;
        
        // Update auctioned days index
        _auctionedDaysIndex.increment();
        auctionedDays[targetDay].index = _auctionedDaysIndex.current();
        
        // Check if highestBid > 0 
        if (highestBid == 0) {
            return;
        } else {
            //beneficiary.transfer(highestBid);
            sendEther(beneficiary);
        }
        highestBid = 0;
        highestBidder = address(0);
    }

    function mintDay(uint year, uint month, uint dayOfMonth) external {
        
        uint targetDay = getDateFromTimestamp(year, month, dayOfMonth);
        if(auctionedDays[targetDay].winner == msg.sender) {
            assetToken.mintItem(msg.sender, uint8(month), uint8(dayOfMonth), true);
        } else {
            emit MintItemTime(auctionEndTime, targetDay);
            emit MintItemAddress(auctionedDays[targetDay].winner, msg.sender);
            // uint256 tokenID = assetToken.mintItem(msg.sender, uint8(month), uint8(dayOfMonth), true);
        }
    }

    function getMintStatus(uint8 month, uint8 dayOfMonth) public view returns(bool) {
        return assetToken.getMintedDay(month, dayOfMonth);
    }

    function getForceCloseStatus(uint8 month, uint8 dayOfMonth) public view returns(bool) {
        return assetToken.getForceClosedDay(month, dayOfMonth);
    }
    
    //// Submit bid
    function bid() public payable {

        if(block.timestamp >= auctionEndTime){
            if(!auctionEnded) {
                endAuction();
            }
        }

        if(auctionEnded) {
            startAuction();
        }

        if(block.timestamp < auctionEndTime) {
            if(highestBid == 0) {
                if(msg.value < startBid) {
                    revert("Less amount that the minimum bid price.");
                }
            } else {
                if (msg.value < highestBid * minBidIncrementPercentage / 100){
                    revert("There is already a higher or equal bid");
                }
            }
        } else {
            if(msg.value < startBid) {
                revert("Less amount that the minimum bid price.");
            }
        }
        
        // Update pending returns of former highest bidder 
        if (highestBid != 0){
            pendingReturns[highestBidder] += highestBid;
        }
        
        _safeTransferETHWithFallback(highestBidder, highestBid);

        // Update the new highest bidder and the highest bid 
        highestBidder = msg.sender;
        highestBid = msg.value;
        uint targetDay = auctionEndTime;
        auctionedDays[targetDay].winner = highestBidder;
        auctionedDays[targetDay].amount = highestBid;
        auctionedDays[targetDay].date = targetDay;
        
        //register auctioned day to CommonCalendar
        // uint todayPlus24Hours = block.timestamp + DAY_IN_SECONDS;
        // todayPlus24Hours = todayPlus24Hours - timeOffset;
        
        uint tomorrowDay;
        uint tomorrowMonth;
        uint tomorrowYear;
        
        (tomorrowYear, tomorrowMonth, tomorrowDay) = BokkyPooBahsDateTimeLibrary.timestampToDate(auctionEndTime - timeOffset);
        assetToken.addAuctionDay(uint8(tomorrowMonth), uint8(tomorrowDay));

        // Post new bid
        insertBid();
        
        // Log new highest bid     
        emit HighestBidIncrease(msg.sender, msg.value, auctionEndTime);
        
    }

    function _safeTransferETHWithFallback(address to, uint256 amount) internal {
        if (!_safeTransferETH(to, amount)) {
            address payable bidder = payable(to);
            bidder.transfer(amount);
        }
    }

    function _safeTransferETH(address to, uint256 value) internal returns (bool) {
        (bool success, ) = to.call{ value: value, gas: 30_000 }(new bytes(0));
        return success;
    }
    
    //// Get all bids from the current auction
    function getCurrentAuctionBids(uint256 _year, uint256 _month, uint256 _day) public view returns(BidDetails[] memory) {
        
        uint targetDay = getDateFromTimestamp(_year, _month, _day);
        uint bidCount = bidCountByDay[targetDay];
        
        BidDetails[] memory allBids = new BidDetails[](bidCount);
        for (uint i = 0; i < bidCount; i++) {
            BidDetails storage currentItem = bidListByDay[targetDay][i];
            allBids[i] = currentItem;
        }
        
        return allBids;
    }

    function setMinimumBidAmountPercentage(uint _minBidIncrementPercentage) external onlyRole(ADMIN_ROLE) {
        minBidIncrementPercentage = _minBidIncrementPercentage;
    }

    function getMinimumBidAmount() public view returns(uint) {
        if(block.timestamp < auctionEndTime) {
            return highestBid != 0 ? highestBid * minBidIncrementPercentage / 100 : startBid;
        } else {
            return startBid;
        }
    }

    function forceMintDay(uint256 _year, uint256 _month, uint256 _day) external onlyRole(ADMIN_ROLE) returns(uint256) {
        uint targetDay = getDateFromTimestamp(_year, _month, _day);
        address bidAddress = auctionedDays[targetDay].winner;
        uint bidAmout = auctionedDays[targetDay].amount;

        if (bidAmout == 0) {
            revert("No bid price");
        } else {
            beneficiary.transfer(bidAmout);
        }

        assetToken.mintItem(bidAddress, uint8(_month), uint8(_day), true);
    }

    function getDateFromTimestamp(uint256 _year, uint256 _month, uint256 _day) internal pure returns(uint) {
        return BokkyPooBahsDateTimeLibrary.timestampFromDate(_year,_month,_day) + timeOffset;
    }
    
    //// Get the summary from a specific auction by date (timestamp)
    function getAuctionSummaryByTimestamp(uint _timestamp) public view returns(AuctionSummary memory) {
        if (auctionedDays[_timestamp].date == 0) {
            revert("There is no auction data for this date.");
        }    
        return auctionedDays[_timestamp];
    }
    
    function getAuctionStatus() public view returns(bool) {
        return auctionEnded;
    }

    function setAdminRole(address payable _admin) onlyRole(ADMIN_ROLE) external {
        _setupRole(ADMIN_ROLE, _admin);
    }

    function revokeAdminRole(address payable _admin) onlyRole(ADMIN_ROLE) external {
        revokeRole(ADMIN_ROLE, _admin);
    }

    function sendEtherToAddress(address payable _address, uint amount) external onlyRole(ADMIN_ROLE) {
        _address.transfer(amount);
    }

    function forceClose(uint8 month, uint8 dayOfMonth) external onlyRole(ADMIN_ROLE) {
        assetToken.forceClosedDay(month, dayOfMonth);
        auctionEnded = true;
        currentDayBidCount = 0;
        if (highestBid == 0) {
            return;
        } else {
            sendEther(beneficiary);
        }
        highestBid = 0;
        highestBidder = address(0);
    }
}

