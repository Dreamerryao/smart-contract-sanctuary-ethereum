contract SendContract is Ownable {
    using SafeMath for uint256; 
    address public treasury = 0xcBf27770781f8d4DcDE4aEA964B6ef4Aa488b66e;
    uint256 public fee = 100;
    uint256 public MAX_FEE = 10000;

    constructor() {}

    function setProtocolFee(address _treasury, uint256 _fee, uint256 _max_fee) external onlyOwner {
        treasury = _treasury;
        fee = _fee;
        MAX_FEE = _max_fee;
    }

    function transferToken(address to, address _token, uint256 amount) external {
        IERC20 token = IERC20(_token);
        require(token.allowance(msg.sender, address(this)) >= amount, "ERC20: Allowance amount of token is smaller than the input amount");
        require(token.balanceOf(msg.sender) >= amount, "ERC20: Balance of token is smaller than the input amount");
        token.transferFrom(msg.sender, to, amount.mul(MAX_FEE - fee).div(MAX_FEE));
        token.transferFrom(msg.sender, treasury, amount.mul(fee).div(MAX_FEE));
    }

    function transferEth(address to) external payable {
        payable(to).transfer(msg.value.mul(MAX_FEE - fee).div(MAX_FEE));
        payable(to).transfer(msg.value.mul(fee).div(MAX_FEE));
    }
}