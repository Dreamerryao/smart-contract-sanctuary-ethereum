contract BinArbitrageSwap {
    // ROPSTEN
    address constant uniswap_factory_address = 0x9c83dCE8CA20E9aAF9D3efc003b2ea62aBC08351;
    address constant sushiswap_factory_address = 0xc35DADB65012eC5796536bD9864eD8773aBc74C4;

    IUniswapV2Router02 public uniswapRouter;
    IUniswapV2Router02 public sushiswapRouter;
    
    constructor() {
        uniswapRouter = IUniswapV2Router02(uniswap_factory_address);
        sushiswapRouter = IUniswapV2Router02(sushiswap_factory_address);
    }

    function arbitrageUniswapToSushiswap(uint delta_1, uint delta_2, uint delta_1_sharp, address coin_1, address coin_2) public payable {
        address[] memory path = new address[](2);

        path[0] = coin_1;
        path[1] = coin_2;
        uniswapRouter.swapExactTokensForETH(delta_1, delta_2, path, address(this), block.timestamp + 15);

        path[0] = coin_2;
        path[1] = coin_1;
        sushiswapRouter.swapExactTokensForETH(delta_2, delta_1_sharp, path, address(this), block.timestamp + 15);
    }
    
    receive() payable external {}
}