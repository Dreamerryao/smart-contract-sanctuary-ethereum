contract ZumerWrappedNativeHelper is ReentrancyGuard, IERC721Receiver {
    address public wrappedNative;

    constructor(address wrappedNative_) {
        wrappedNative = wrappedNative_;
    }

    function mint(address ZBond) public payable nonReentrant {
        require(msg.value > 0, "helper: sent native token cannot be 0");
        IWrappedNative(wrappedNative).deposit{value: msg.value}();
        IERC20(wrappedNative).approve(ZBond, msg.value);
        uint256 ZBondID = IZBond(ZBond).mint(msg.value);
        IERC721(ZBond).transferFrom(address(this), msg.sender, ZBondID);
    }

    function redeem(address ZBond, uint256[] calldata ids) public nonReentrant {
        for (uint256 i = 0; i < ids.length; i++) {
            IERC721(ZBond).transferFrom(msg.sender, address(this), ids[i]);
        }
        uint256 converted = IZBond(ZBond).redeem(ids);
        IWrappedNative(wrappedNative).withdraw(converted);
        _safeTransferETHWithFallback(msg.sender, converted);
    }

    function redeemPartial(
        address ZBond,
        uint256[] calldata ids,
        uint256 virtualBalance
    ) public nonReentrant {
        for (uint256 i = 0; i < ids.length; i++) {
            IERC721(ZBond).transferFrom(msg.sender, address(this), ids[i]);
        }
        uint256 converted = IZBond(ZBond).redeem(ids, virtualBalance);
        IWrappedNative(wrappedNative).withdraw(converted);
        _safeTransferETHWithFallback(msg.sender, converted);
    }

    function stake(address provisioningPool, uint256 duration) public payable nonReentrant {
        require(msg.value > 0, "helper: sent native token cannot be 0");
        IWrappedNative(wrappedNative).deposit{value: msg.value}();
        IERC20(wrappedNative).approve(provisioningPool, msg.value);
        uint256 ppID = IProvisioningPool(provisioningPool).stake(msg.value, duration);
        IERC721(provisioningPool).transferFrom(address(this), msg.sender, ppID);
    }

    function unstake(address provisioningPool, uint256[] calldata ids) public nonReentrant {
        for (uint256 i = 0; i < ids.length; i++) {
            IERC721(provisioningPool).transferFrom(msg.sender, address(this), ids[i]);
        }

        uint256 unstaked = IProvisioningPool(provisioningPool).unstake(ids);
        IWrappedNative(wrappedNative).withdraw(unstaked);
        _safeTransferETHWithFallback(msg.sender, unstaked);
    }

    function repayBorrow(address ZBond, uint256 amount) public payable nonReentrant {
        require(msg.value >= 0, "helper: sent native token cannot be 0");
        IWrappedNative(wrappedNative).deposit{value: msg.value}();
        IERC20(wrappedNative).approve(ZBond, msg.value);
        IZBond(ZBond).repayBorrowBehalf(msg.sender, amount);
        uint256 remainingAmount = IERC20(wrappedNative).balanceOf(address(this));
        if (remainingAmount > 0) {
            IWrappedNative(wrappedNative).withdraw(remainingAmount);
            _safeTransferETHWithFallback(msg.sender, remainingAmount);
        }
    }

    function _safeTransferETHWithFallback(address to, uint256 amount) internal {
        if (!_safeTransferETH(to, amount)) {
            IWrappedNative(wrappedNative).deposit{value: amount}();
            IERC20(wrappedNative).transfer(to, amount);
        }
    }

    function _safeTransferETH(address to, uint256 value) internal returns (bool) {
        (bool success, ) = to.call{value: value, gas: 30_000}(new bytes(0));
        return success;
    }

    receive() external payable {}

    function activateInsurance(
        address auctionMarket,
        address ZNft,
        address originalOwner,
        uint256 amount
    ) external payable nonReentrant {
        require(msg.value > 0, "helper: sent native token cannot be 0");
        IWrappedNative(wrappedNative).deposit{value: msg.value}();
        IERC20(wrappedNative).approve(auctionMarket, msg.value);
        IAuctionMarket(auctionMarket).activateInsurance(ZNft, originalOwner, amount);
    }

    function bid(
        address auctionMarket,
        uint256 id,
        address ZNft
    ) external payable nonReentrant {
        require(msg.value > 0, "helper: sent native token cannot be 0");
        IWrappedNative(wrappedNative).deposit{value: msg.value}();
        IERC20(wrappedNative).approve(auctionMarket, msg.value);
        IAuctionMarket(auctionMarket).bidOnBehalf(msg.sender, id, ZNft, msg.value);
    }

    function redeemAndPayPenalty(
        address auctionMarket,
        uint256 id,
        address ZNft
    ) external payable nonReentrant {
        require(msg.value > 0, "helper: sent native token cannot be 0");
        IWrappedNative(wrappedNative).deposit{value: msg.value}();
        IERC20(wrappedNative).approve(auctionMarket, msg.value);
        IAuctionMarket(auctionMarket).redeemAndPayPenalty(id, ZNft);
    }

    function mintZPunk(
        ICryptoPunk punk,
        IWPunk wPunk,
        IZNft zPunk,
        uint256[] calldata ids
    ) external nonReentrant {
        // set up proxy if haven't
        if (wPunk.proxyInfo(address(this)) == address(0)) {
            wPunk.registerProxy();
        }

        for (uint256 i = 0; i < ids.length; i++) {
            //transfer punks from the users to this contract
            punk.buyPunk(ids[i]);

            require(punk.punkIndexToAddress(ids[i]) == address(this), "helper does not own punk");
            // transfer to proxy
            address proxy = wPunk.proxyInfo(address(this));
            punk.transferPunk(proxy, ids[i]);
            wPunk.mint(ids[i]);
        }
        // mint zPunk
        // approve all wPunks for zPunk
        IERC721(address(wPunk)).setApprovalForAll(address(zPunk), true);
        zPunk.mint(ids, msg.sender);
    }

    function redeemPunk(
        ICryptoPunk punk,
        IWPunk wPunk,
        IZNft zPunk,
        uint256[] calldata ids
    ) external nonReentrant {
        // transfer zpunk from the users
        for (uint256 i = 0; i < ids.length; i++) {
            IERC721(address(zPunk)).safeTransferFrom(msg.sender, address(this), ids[i], "");
        }

        // redeem zPunk to wPunk
        zPunk.redeem(ids, address(this));

        for (uint256 i = 0; i < ids.length; i++) {
            // convert wPunk to punk
            wPunk.burn(ids[i]);
            // transfer punk to the caller
            punk.transferPunk(msg.sender, ids[i]);
        }
    }

    function onERC721Received(
        address operator,
        address from,
        uint256 tokenId,
        bytes calldata data
    ) public virtual override returns (bytes4) {
        return this.onERC721Received.selector;
    }
}

