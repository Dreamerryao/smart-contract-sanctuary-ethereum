library Storage {
    bytes32 constant DIAMOND_STORAGE_POSITION = keccak256("diamond.standard.diamond.storage");

    struct StoreSet {
        uint128 _price;
        uint64 _timestamp;
    }

    struct PriceSet {
        StoreSet[] _inner;
    }

    struct AssetPrice {
        mapping(bytes32 => PriceSet) _price;
    }

    function diamondStorage() internal pure returns (AssetPrice storage ds) {
        bytes32 position = DIAMOND_STORAGE_POSITION;
        assembly {
            ds.slot := position
        }
    }

    function update(bytes32 slot,uint128 price, uint64 timestamp) internal returns (bool) {
        AssetPrice storage set = diamondStorage();
        set._price[slot]._inner.push(StoreSet(price,timestamp));
        return true;
    }

    function length(bytes32 slot) internal view returns (uint256) {
        AssetPrice storage set = diamondStorage();
        return set._price[slot]._inner.length;
    }

    function values(bytes32 slot) internal view returns (StoreSet[] memory) {
        AssetPrice storage set = diamondStorage();
        return (set._price[slot]._inner);
    }

    function currentPrice(bytes32 slot) internal view returns (uint128) {
        AssetPrice storage set = diamondStorage();
        return (set._price[slot]._inner[set._price[slot]._inner.length - 1]._price);
    }

    function currentPriceWithTime(bytes32 slot) internal view returns (StoreSet memory) {
        AssetPrice storage set = diamondStorage();
        return (set._price[slot]._inner[set._price[slot]._inner.length - 1]);
    }

    function filter(bytes32 slot,uint256 startTime,uint256 endTime) internal view returns (uint256 average) {
        AssetPrice storage set = diamondStorage();
        uint256 data = set._price[slot]._inner.length;
        uint256 totalDate;
        for(uint256 i; i<data; i++) {
            if(set._price[slot]._inner[i]._timestamp >= startTime && set._price[slot]._inner[i]._timestamp <= endTime){
                average = average + set._price[slot]._inner[i]._price;
                totalDate++;
            }
        }

        return (average / totalDate);
    }
}

