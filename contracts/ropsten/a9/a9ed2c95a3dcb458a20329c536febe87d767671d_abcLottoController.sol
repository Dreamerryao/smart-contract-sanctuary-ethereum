contract abcLottoController is usingOraclize{
    uint8 constant MAX_BET_NUM = 9;   

    address owner;
    uint8 public randomGenerateMethod = 1;  //1 - oraclize ledger, 2 - oraclize random.org, 3 - block hash.
    uint public callbackGas = 2000000;      //2 million gas for callback by default;
    
    abcLottoResolverI resolver;
    abcLottoI lotto; 
    uint8 generatedRandom = 0;

    //events
     event BalanceNotEnough(string description);
     event VerifyRandomProofFail(bytes32);
     event OnDrawFinished(uint8[4]);
     event OnDrawStart();
 
    //modifier
    modifier abcInterface {
        if((address(resolver)==0)||(getCodeSize(address(resolver))==0))
            abc_initNetwork();
        if(address(lotto) != resolver.getAddress())
            lotto = abcLottoI(resolver.getAddress());
        _;
    }

     modifier onlyOwner {
         require(msg.sender == owner);
         _;
     }
    
    /**
     * @dev constructor
     */
    function abcLottoController() public payable{
         owner = msg.sender;
    }
         
     /**
     * @dev fallback funtion, should be payable and as cheap as possible.
     */
    function() public payable { }
     
    function abc_initNetwork() internal returns(bool) {
        //ropsten
        if (getCodeSize(0xad90a7e8f87739c56549885fa47520719bbc8cc1)>0){     
            resolver = abcLottoResolverI(0xad90a7e8f87739c56549885fa47520719bbc8cc1);
            return true;
        }        

        //mainnet
        
        //others ...
    }

    function getCodeSize(address _addr) constant internal returns(uint _size) {
        assembly {
            _size := extcodesize(_addr)
        }
    }

    /**
    * @dev opnen next round. current round must be drawed.
    */
    function nextround() public onlyOwner abcInterface {
        generatedRandom = 0;
        lotto.nextRound();
    }
    
    /**
     * @dev enter freeze period.
    */ 
    function freeze() public onlyOwner abcInterface {
        lotto.freeze();
    }

    /**
     * @dev unfreeze.
    */ 
    function unfreeze() public onlyOwner abcInterface {
        lotto.unfreeze();
    }
    
    /**
     * @dev main operation to draw.
    */ 
    function draw() public onlyOwner abcInterface payable{
        if(generatedRandom >= 4) return;    

        if(generatedRandom == 0){
            lotto.draw();     
            OnDrawStart();
        }

        if(randomGenerateMethod == 1){
            uint N = 16; 
            uint delay = 0; 
            oraclize_setProof(proofType_Ledger);    // sets the Ledger authenticity proof 
            if(oraclize_getPrice("random",callbackGas) > address(this).balance){
                BalanceNotEnough("balance NOT enough! oraclize query was not sent.");
            }else{            
                oraclize_newRandomDSQuery(delay, N, callbackGas);
            }
        }

        if(randomGenerateMethod == 3){
            _draw3();
        }
    }

    /**
     * @dev oraclize callback function.
    */ 
    function __callback(bytes32 _queryId, string _result, bytes _proof) public payable abcInterface
    { 
        if (msg.sender != oraclize_cbAddress()) revert();
        uint8[4] memory jackpot;    
        
        if(randomGenerateMethod == 1){
            if (oraclize_randomDS_proofVerify__returnCode(_queryId, _result, _proof) != 0) {
                // the proof verification has failed
                VerifyRandomProofFail(_queryId);
                draw();
                return;
            }

            bytes memory result = bytes(_result);
            for(uint i=0; i<result.length; i++){
                if(generatedRandom >= 4) break;   //get 4 randomness, break;
                uint8 _r = uint8(result[i]) % MAX_BET_NUM + 1;
                bool repeated = false;
                for(uint8 j=0; j<generatedRandom; j++){
                    if(_r == jackpot[j])
                        repeated = true;
                }
                if(!repeated){
                    jackpot[generatedRandom] = _r;
                    generatedRandom++;
                }
            }

            if(generatedRandom < 4){
                draw();
                return;
            }

            lotto.setJackpot(jackpot);
            OnDrawFinished(jackpot);
        }
    }

    /**
    * @dev set random generate method.
    */    
    function setRandomGenerateMethod(uint8 method) public onlyOwner{
        randomGenerateMethod = method;
    }

    /**
    * @dev set oraclize callback gas.
    */    
    function setCallbackGas(uint gaslimit) public onlyOwner{
        callbackGas = gaslimit;
    }

    /**
    * @dev transfer extra ether to another.
    */     
    function transfer(address to, uint amount) public onlyOwner{
        require(address(this).balance > amount);
        to.transfer(amount);
    }

    /**
      * @dev set new owner      
      * @param newOwner The address to transfer ownership to.
    */
    function setNewOwner(address newOwner) public onlyOwner{
        require(newOwner != address(0x0));
        owner = newOwner;
    }

    /**
    * @dev use latest block hash to generate randomness.
     */
     function _draw3() internal abcInterface {
         uint8[4] memory jackpot;   

         uint i=1;
         bytes32 _b1;
         bytes32 _b2;
         bytes32 _b;
         do{
             _b1 = block.blockhash(block.number-i);
             _b2 = block.blockhash(block.number-i-16);
             _b = _b1 ^ _b2;
             _b = keccak256(_b,block.timestamp);
             uint8 _r = uint8(uint256(_b) % MAX_BET_NUM) + 1;
             bool repeated = false;
             for(uint8 j=0; j<generatedRandom; j++){
                 if(_r == jackpot[j])
                    repeated = true;
             }

             if(!repeated){
                 jackpot[generatedRandom] = _r;
                 generatedRandom++;
             }

             i++;
         }
         while(generatedRandom<4);

         lotto.setJackpot(jackpot);
         OnDrawFinished(jackpot);
     }
}