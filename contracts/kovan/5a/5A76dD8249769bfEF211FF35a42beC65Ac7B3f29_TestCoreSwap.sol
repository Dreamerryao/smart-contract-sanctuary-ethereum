pragma solidity 0.8.0;

import "IUniswapV2Pair.sol";
import "TransferHelper.sol";

contract TestCoreSwap {
	
	address public pairAddress = 0x5ae45101eB47752Ea0068F432735cF00F6C849bD;
	uint256 public lastSentAmount = 0;	
	
	address public token0;
	address public token1;

	constructor() {
		token0 = IUniswapV2Pair(pairAddress).token0();	
		token1 = IUniswapV2Pair(pairAddress).token1();	
	}

	function sendLinkToSwap(uint256 _linkAmount) public {
		TransferHelper.safeTransferFrom(
			token0, msg.sender, pairAddress, _linkAmount
		);
		lastSentAmount = _linkAmount;
	}

	function doSwapAfterSendingLink() public {
		IUniswapV2Pair(pairAddress).swap(
			lastSentAmount, 0, msg.sender, new bytes(0)
		);
	}

	function doLinkToWethSwap(uint256 _linkAmount) public {
		sendLinkToSwap(_linkAmount);
		doSwapAfterSendingLink();
	}
}

