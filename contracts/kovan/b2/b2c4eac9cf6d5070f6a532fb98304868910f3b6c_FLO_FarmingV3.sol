        UserInfo storage user = userInfo[_pid][msg.sender];
        require(user.amount >= _amount, "withdraw: not good");
		require(now > user.lockPeriod, "in locked period");
		
        updatePool(_pid);
        uint256 pending = user.amount.mul(pool.accCakePerShare).div(1e3).sub(user.rewardDebt);
        if(pending > 0) {
           uint256 claimAmount = pending;
			
			if(pool.devFee > 0){
				uint256 devAmount = pending * pool.devFee / _divRate;
				safeRewardTransfer(devaddr, devAmount);
				claimAmount -= devAmount;
				emit DevFee(msg.sender, devAmount);
			}
			
			if(pool.treasuryFee > 0){
				uint256 treasuryAmount = pending * pool.treasuryFee / _divRate;
				safeRewardTransfer(treasuryaddr, treasuryAmount);
				claimAmount -= treasuryAmount;
				emit TreasuryFee(msg.sender, treasuryAmount);
			}
			safeRewardTransfer(msg.sender, claimAmount);
        }
        if(_amount > 0) {
            user.amount = user.amount.sub(_amount);
            pool.lpToken.safeTransfer(address(msg.sender), _amount);
        }
        user.rewardDebt = user.amount.mul(pool.accCakePerShare).div(1e3);
        emit Withdraw(msg.sender, _pid, _amount);
    }

    function emergencyWithdraw(uint256 _pid) public {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        pool.lpToken.safeTransfer(address(msg.sender), user.amount);
        emit EmergencyWithdraw(msg.sender, _pid, user.amount);
        user.amount = 0;
        user.rewardDebt = 0;
    }

	function safeRewardTransfer(address _to, uint256 _amount) internal {
        IERC20(tokenReward).safeTransfer(_to, _amount);
    }

    function dev(address _devaddr) public {
        require(msg.sender == devaddr, "dev: wut?");
        devaddr = _devaddr;
    }
	
    function treasury(address _treasuryaddr) public {
        require(msg.sender == treasuryaddr, "dev: wut?");
        treasuryaddr = _treasuryaddr;
    }
}