/**
 * @title EthSignSATrigger contract
 * @dev A trigger contract that calls the executor with index information when certain conditions are met.
 * @author EthSignSA Team
 **/
contract EthSignSATrigger is
    Ownable,
    KeeperCompatibleInterface,
    ChainlinkClient,
    IEthSignSATrigger
{
    using Chainlink for Chainlink.Request;

    IERC20 public _linkInstance;

    IEthSignSARegistry private _registry;
    IEthSignSAModerator private _moderator;
    IEthSignSAExecutor public _executor;
    EthSignSAManager public _manager;

    address public _initiator;
    address public _beneficiary;
    uint256 public _jobStartTime; // seconds
    uint256 public _expirationTime;
    uint256 public _jobIntervalSeconds;

    bytes32 public _jobId;
    address public _oracle;
    uint256 public _fee;
    string[] private _urls;
    string[] private _paths;
    bytes32[] private _expectedResults;
    bytes32 private _rewardsHash;
    bool private _responsePending;

    address[] public _targetContracts;
    bytes[] public _encodedSelectors;
    bytes[] public _expectedReturnData;

    uint256 private _index;

    uint256 private _jobLastRun;
    bool private _jobInitialized;
    bool private _jobCompleted;
    bool private _registered;

    function register(
        IERC20 linkInstance,
        address initiator,
        uint256 expirationTime,
        uint256 jobIntervalSeconds,
        IEthSignSARegistry registry,
        IEthSignSAModerator moderator,
        EthSignSAManager manager
    ) external override {
        require(block.timestamp < expirationTime, "Invalid expiration");
        require(
            expirationTime - block.timestamp > jobIntervalSeconds,
            "Job too short"
        );
        require(_initiator == address(0), "Already registered");
        _initiator = initiator;
        _registry = registry;
        _moderator = moderator;
        _manager = manager;
        _linkInstance = linkInstance;
        _expirationTime = expirationTime;
        _jobIntervalSeconds = jobIntervalSeconds;
    }

    function initializeOffChainData(
        address beneficiary,
        bytes32 jobId,
        address oracle,
        uint256 fee,
        string[] memory urls,
        string[] memory paths,
        bytes32[] calldata expectedResults,
        uint256[] calldata rewards,
        IEthSignSAExecutor executor
    ) external override {
        require(
            (urls.length == paths.length) &&
                (urls.length == expectedResults.length) &&
                (urls.length == rewards.length),
            "Input mismatch"
        );
        require(_initiator != address(0), "Initiator not set");
        require(!_jobInitialized, "Already initialized");
        setPublicChainlinkToken();
        _jobId = jobId;
        _oracle = oracle;
        _fee = fee;
        _urls = urls;
        _paths = paths;
        _expectedResults = expectedResults;
        _rewardsHash = keccak256(abi.encodePacked(rewards));
        _jobInitialized = true;
        _executor = executor;
        _jobStartTime = block.timestamp - 1;
        _jobLastRun = block.timestamp - 1;
        _beneficiary = beneficiary;
        _registry.registerJob(this, executor);
        _registered = true;
    }

    function initializeOnChainData(
        address beneficiary,
        address[] calldata targetContracts,
        bytes[] memory encodedSelectors,
        bytes[] memory expectedReturnData,
        uint256[] calldata rewards,
        IEthSignSAExecutor executor
    ) external override {
        require(_initiator != address(0), "Initiator not set");
        require(!_jobInitialized, "Already initialized");
        _targetContracts = targetContracts;
        _encodedSelectors = encodedSelectors;
        _expectedReturnData = expectedReturnData;
        _jobInitialized = true;
        _rewardsHash = keccak256(abi.encodePacked(rewards));
        _executor = executor;
        _jobStartTime = block.timestamp;
        _jobLastRun = block.timestamp - 1;
        _beneficiary = beneficiary;
        _registry.registerJob(this, executor);
        _registered = true;
    }

    function getInfo()
        external
        view
        override
        returns (
            address initiator,
            address beneficiary,
            bytes32 rewardsHash,
            uint256 currentIndex
        )
    {
        return (_initiator, _beneficiary, _rewardsHash, _index);
    }

    function hasExpired() external view override returns (bool) {
        return _expirationTime < block.timestamp;
    }

    /**
     * @dev Either when some milestones expire or all milestones are done,
     * project can withdraw the remaining dai (in the case expiration)
     * or link (in the case delivery in advance) from the contract
     **/
    function withdraw() external {
        require(_msgSender() == _initiator, "Unauthorized");
        if (!_jobCompleted)
            require(_expirationTime < block.timestamp, "Not expired");
        uint256 remainingLink = _linkInstance.balanceOf(address(this));
        _linkInstance.transfer(_initiator, remainingLink);
        emit EthSignSATriggerFundsReclaimed(remainingLink);
    }

    function triggerExecution() internal {
        (
            address initiator,
            address beneficiary,
            bytes32 rewardsHash,
            uint256 index
        ) = _executor.getInfo();
        if (
            (_initiator != initiator) ||
            (_beneficiary != beneficiary) ||
            (_rewardsHash != rewardsHash) ||
            (_index != index)
        ) {
            _jobCompleted = true;
            emit EthSignSAInconsistencyDetected();
            _executor.handleDispute();
            _manager.removeJob();
            return;
        }
        emit EthSignSAExecutionTriggered(_urls[_index]);
        if (!_executor.execute()) {
            emit EthSignSAExecutionFailed();
            return;
        }
        ++_index;
        if (
            (_index == _urls.length && _urls.length > 0) ||
            (_index == _targetContracts.length && _targetContracts.length > 0)
        ) {
            _jobCompleted = true;
            _manager.removeJob();
            emit EthSignSAJobCompleted();
        }
    }

    /**
     * Off-chain data source
     */
    function sendGetRequest() internal returns (bytes32 requestId) {
        require(!_responsePending, "REQ_PENDING");
        Chainlink.Request memory request = buildChainlinkRequest(
            _jobId,
            address(this),
            this.getCallback.selector
        );
        request.add("get", _urls[_index]);
        request.add("path", _paths[_index]);
        _responsePending = true;
        return sendChainlinkRequestTo(_oracle, request, _fee);
    }

    function getCallback(bytes32 requestId, bytes32 result)
        public
        recordChainlinkFulfillment(requestId)
    {
        _responsePending = false;
        emit EthSignSAResultReceived(_expectedResults[_index], result);
        if (result != _expectedResults[_index]) return;
        triggerExecution();
    }

    /**
     * On-chain data source
     */
    function fetchOnChainData() internal view returns (bool) {
        (bool success, bytes memory returnData) = _targetContracts[_index]
            .staticcall(_encodedSelectors[_index]);
        require(success, "Failed to fetch");
        return (keccak256(abi.encode(returnData)) ==
            keccak256(abi.encode(_expectedReturnData[_index])));
    }

    function checkUpkeep(bytes calldata checkData)
        external
        view
        override
        returns (bool upkeepNeeded, bytes memory performData)
    {
        return _checkUpkeep(checkData);
    }

    function _checkUpkeep(bytes memory checkData)
        internal
        view
        returns (bool upkeepNeeded, bytes memory performData)
    {
        bool jobCanRun = (block.timestamp > _jobStartTime) &&
            (block.timestamp < _expirationTime);
        bool jobShouldRun = (block.timestamp - _jobLastRun) >=
            _jobIntervalSeconds;
        upkeepNeeded = jobCanRun && jobShouldRun;
        performData = checkData;
        if (_responsePending) upkeepNeeded = false;
        if (_jobCompleted) upkeepNeeded = false;
        if (!_registered) upkeepNeeded = false;
    }

    function performUpkeep(bytes calldata performData) external override {
        (bool upkeepNeeded, ) = _checkUpkeep(performData);
        require(upkeepNeeded, "Should not upkeep");
        emit EthSignSAUpkeepPerformed();
        _jobLastRun = block.timestamp;
        if (_targetContracts.length == 0) {
            sendGetRequest();
        } else {
            require(fetchOnChainData(), "Retval mismatch");
            triggerExecution();
        }
    }
}

