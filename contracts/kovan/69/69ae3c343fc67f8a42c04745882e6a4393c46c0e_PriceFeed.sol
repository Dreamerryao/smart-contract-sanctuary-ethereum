pragma solidity ^0.7.4;
pragma experimental ABIEncoderV2;

import "@uniswap/v2-periphery/contracts/interfaces/IUniswapV2Router02.sol";

import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/math/SafeMathUpgradeable.sol";

import "../interfaces/helpers/IPriceFeed.sol";

contract PriceFeed is IPriceFeed, OwnableUpgradeable {
    using SafeMathUpgradeable for uint256;

    IUniswapV2Router02 public uniswapRouter;

    address public override wethToken;
    address public override wnxmToken;
    address public override daiToken;
    address public override usdcToken;
    address public override insurToken;

    function __PriceFeed_init(
        address _uniswapRouter,
        address _weth,
        address _wNXM,
        address _dai,
        address _usdc,
        address _insur
    ) external initializer {
        uniswapRouter = IUniswapV2Router02(_uniswapRouter);
        wethToken = _weth;
        wnxmToken = _wNXM;
        daiToken = _dai;
        usdcToken = _usdc;
        insurToken = _insur;
    }

    function howManyWNXMsInDAI(uint256 daiAmount) external view override returns (uint256) {
        if (daiAmount == 0) {
            return 0;
        }

        address[] memory pairs = new address[](3);
        pairs[0] = daiToken;
        pairs[1] = wethToken;
        pairs[2] = wnxmToken;

        uint256[] memory amounts = uniswapRouter.getAmountsOut(daiAmount, pairs);

        return amounts[amounts.length - 1];
    }

    function howManyDAIsInWNXM(uint256 wnxmAmount) external view override returns (uint256) {
        if (wnxmAmount == 0) {
            return 0;
        }

        address[] memory pairs = new address[](3);
        pairs[0] = wnxmToken;
        pairs[1] = wethToken;
        pairs[2] = daiToken;

        uint256[] memory amounts = uniswapRouter.getAmountsOut(wnxmAmount, pairs);

        return amounts[amounts.length - 1];
    }

    function getUniswapRouter() external view override returns (address) {
        return address(uniswapRouter);
    }
}

