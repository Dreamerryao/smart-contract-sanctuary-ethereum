pragma solidity ^0.8.6;

import "@chainlink/contracts/src/v0.8/interfaces/LinkTokenInterface.sol";
import "./CoinFlip.sol";

 /**
 @title
 @author
 */
contract Generator {
  address[] public coinflips;

  address public vrfCoordinator;
  LinkTokenInterface public link;

  uint256 fee;

  bytes32 keyHash;

  constructor(address _vrfCoordinator, address _link, uint256 _fee, bytes32 _keyHash) {
    link = LinkTokenInterface(_link);
    vrfCoordinator = _vrfCoordinator;
    fee = _fee;
    keyHash = _keyHash;
  }

  function generateCoinFlip(uint256 duration) external returns (address) {
    CoinFlip child = new CoinFlip(block.timestamp + duration, vrfCoordinator, address(link), fee, keyHash, address(this), false);
    coinflips.push(address(child));
    return address(child);
  }

  function generatePrepaidCoinFlip(uint256 duration) external returns (address) {
    require(link.allowance(msg.sender, address(this)) >= fee, "Not enough link allowance to create prepaid CoinFlip.");

    CoinFlip child = new CoinFlip(block.timestamp + duration, vrfCoordinator, address(link), fee, keyHash, address(this), true);
    bool success = link.transferFrom(msg.sender, address(child), fee);
    require(success, "Link transfer to child contract failed");
    coinflips.push(address(child));
    return address(child);
  }

  // helper function to remove address from array if it is there
  function removeElementByAddress(address element) internal {
    for (uint i = 0; i<coinflips.length; i++){
      if (coinflips[i] == element) {
        if (coinflips.length > 1) {
          coinflips[i] = coinflips[coinflips.length-1];
        }
        coinflips.pop();
        break;
      }
    }
  }

  function getLinkBettingFee(uint256 _fee, address owner) external onlyBets returns (bool success) {
    return link.transferFrom(owner, msg.sender, _fee);
  }

  function getCoinFlip() external view returns (address) {
    require(coinflips.length > 0);
    return coinflips[0];
  }

  function deregister() external {
    removeElementByAddress(msg.sender);
  }

  modifier onlyBets() {
    for (uint i = 0; i<coinflips.length; i++){
      if (coinflips[i] == msg.sender) {
        _;
        break;
      }
    }
  }
}

