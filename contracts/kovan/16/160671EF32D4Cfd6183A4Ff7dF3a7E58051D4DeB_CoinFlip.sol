pragma solidity ^0.8.6;

import "abdk-libraries-solidity/ABDKMath64x64.sol";
import "@chainlink/contracts/src/v0.8/VRFConsumerBase.sol";
import "./Generator.sol";

 /**
 @title coinflip bet contract
 @author
 */
contract CoinFlip is VRFConsumerBase {
  mapping (bool => mapping(address => uint256)) public bets; // user bets per result
  mapping (bool => address[]) public players; // users per result as list, because mappings can not be iterated
  mapping (bool => uint256) public totalWagers; // total wagers for all results for easy odds calculation

  uint256 bettingFee; // additional fee for betting, used to give incentive to resolving players

  uint256 public expirationDate; // time when the bet closes

  bool public result; // result of the game: true = heads, false = tails

  bool private resolved; // if the resolve process has been kicked off, serves as reentrancy guard

  // VRF
  bool internal fulfilled; // if the random number has been reported back by the oracle
  bool internal requested; // if the random number has been requested from the oracle
  bool internal prepaid; // if pulling link from the user should be suppressed

  bytes32 internal requestId; // request id to oracle

  bytes32 internal keyHash;
  uint256 internal fee; // holds how much link needs to be allocated for one oracle call

  address public firstResolver;

  Generator generator;

  // better visibility
  event Resolved(address indexed, bool indexed);

  event Result(bool indexed);

  event Payout(address indexed, uint256 indexed);

  event Incentive(address indexed, uint256 indexed);

  constructor(uint256 _expirationDate, address _vrfCoordinator, address _link, uint256 _fee, bytes32 _keyHash, address _generator, bool _prepaid)
    VRFConsumerBase(
      _vrfCoordinator, // VRF Coordinator
      _link  // LINK Token
    )
  {
    keyHash = _keyHash; // 0x6c3699283bda56ad74f6b855546325b68d482e983852a7a82979cc4807b641f4;
    fee = _fee; // 0.1 * 10 ** 18;
    expirationDate = _expirationDate;
    bettingFee = 130000; // 8 p1, 5 p2
    generator = Generator(_generator);
    prepaid = _prepaid;
  }

  // checks if the internal timer is expired
  function betExpired() internal view returns (bool isExpired){
    return expirationDate <= block.timestamp;
  }

  // place a bet with the given wager for a result
  function placeBet(bool _result, uint256 _wager) external payable {
    require(!betExpired(), "Bet already expired."); // close the bet at some predefined point in time
    require(!resolved, "Bet is already being resolved."); // reentrancy guard
    uint256 gasAwareFee = bettingFee * tx.gasprice;
    require(msg.value > gasAwareFee, "Wager does not cover betting fees.");
    require(msg.value == _wager, "Wager does not match payed Wei."); // not nessary but good practice

    // Discount fees if player has already bet (on this result! - betting on both results could make the bet resolvable by themselves, so twice the fees!)
    if (bets[_result][msg.sender] > 0) {
      // add wager into books
      bets[_result][msg.sender] += _wager;
      totalWagers[_result] += _wager;
    } else {
      // get the LINK from allowance into the contracts account, leftovers will be repayed later
      bool transferSuccess;
      if (prepaid) {
        // skip getting link if contract is marked as prepaid
        transferSuccess = true;
      } else if (LINK.allowance(msg.sender, address(this)) < fee/2) {
        // try to get link via generator
        transferSuccess = generator.getLinkBettingFee(fee/2, msg.sender);
      } else {
        // get link directly to this contract
        transferSuccess = LINK.transferFrom(msg.sender, address(this), fee/2);
      }
      require(transferSuccess, "Link transfer was not successful.");

      // add wager into books
      bets[_result][msg.sender] = _wager - gasAwareFee;
      players[_result].push(msg.sender);
      totalWagers[_result] += _wager - gasAwareFee;
    }
  }

  ///Debug only - Get contract wei
  function getContractBalance() external view returns (uint256 contractBalance) {
    return address(this).balance;
  }

  ///Debug only - Get contract link balance
  function getContractLinkBalance() external view returns (uint256 contractLinkBalance) {
    return LINK.balanceOf(address(this));
  }

  // // Debug only - get generated Oracle request ID - required for local testing
  // function getRequestID() external view returns (bytes32 requestID) {
  //   return requestId;
  // }

  // internal check if a bet is resolvable (i.e. at least one bet on each result and enough link)
  function betResolvable() internal view returns (bool valid) {
    return totalWagers[true] != 0 && totalWagers[false] != 0;
  }

  // first part of resolving the bet, requests a number from an oracle
  function resolvePhase1() external  {
    require(betExpired(), "Bet not expired yet."); // commented out for debug
    require(!resolved, "Bet was already resolved."); // reentrancy guard

    // set reentrancy guard
    resolved = true;
    // save whoever kicked off resolving for incentive system
    firstResolver = msg.sender;

    // emit phase1 event
    emit Resolved(address(this), false);

    // Not enough link => Not enough bets => direct payout
    if (!betResolvable()) {
      payout();
      incentive();
      return;
    }

    expirationDate = block.timestamp + 10 minutes;
    // request random number from oracle
    requestId = requestRandomness(keyHash, fee);
  }

  function payout() internal {
    if (!betResolvable()) {
      // only wagers on one result => bet failed => payback for everybody
      address[] memory _players = players[false];
      for (uint i; i < _players.length; i++) {
        address player = _players[i];
        uint256 wager = bets[false][player];
        payable(player).send(wager);
      }
      _players = players[true];
      for (uint i; i < _players.length; i++) {
        address player = _players[i];
        uint256 wager = bets[true][player];
        payable(player).send(wager);
      }
    } else {
      int128 odds = getOdds(result); // internal, trusted

      // kick off payout for winning players
      address[] memory _players = players[result];
      for (uint i; i < _players.length; i++) {
        address player = _players[i];
        uint256 wager = bets[result][player];

        // Not overflow safe, but allows up to 2**128 Wei ~= 3.4e20 Eth, with currently 1.2e8 Eth in existence
        uint256 playerPayout = ABDKMath64x64.mulu(odds, wager);

        // TODO: Check if floating point precision leads to higher overall payout than contract balance
        payable(player).send(playerPayout);
        emit Payout(player, playerPayout);
      }
    }

    // pay leftover LINK back to players
    uint256 linkRepay = ABDKMath64x64.toUInt(ABDKMath64x64.divu(LINK.balanceOf(address(this)), players[result].length + players[!result].length));
    if (linkRepay > 0) {
      for (uint i; i < players[false].length; i++) {
        address player = players[false][i];
        LINK.transfer(player, linkRepay);
      }
      for (uint i; i < players[true].length; i++) {
        address player = players[true][i];
        LINK.transfer(player, linkRepay);
      }
    }
  }

  function incentive() internal {
    if (firstResolver != msg.sender) {
      // calculate how much balance we have left -> goes to incentive payout evenly split by whoever resolved
      uint256 leftoverIncentive = address(this).balance;

      uint256 payoutFirstResolve = ABDKMath64x64.toUInt(ABDKMath64x64.divu(leftoverIncentive - phase1Cost() - phase2Cost(), 2)) + phase1Cost();
      payable(firstResolver).send(payoutFirstResolve);
      emit Incentive(firstResolver, payoutFirstResolve);
    }

    uint256 linkbalance = LINK.balanceOf(address(this));
    if (linkbalance > 0) {
      // transfer leftover link as incentive
      LINK.transfer(firstResolver, linkbalance);
    }

    generator.deregister();

    emit Incentive(msg.sender, address(this).balance);

    selfdestruct(payable(msg.sender)); // sends all remaining balance wei to sender and frees contract
  }

  // second part of resolving the bet, can be called once the oracle has returned a number, will run payout logic
  function resolvePhase2() external {
    require(resolved, "Phase 1 of resolution is not complete."); // maybe not needed
    require(fulfilled || betExpired(), "Randomness is not fulfilled yet."); // no random number has been reported, wait some more

    // emit phase 2 event
    emit Resolved(address(this), true);

    payout();

    incentive();
  }

  function phase1Cost() internal view returns (uint256) {
    return 155868 * tx.gasprice;
  }

  /// Estimates Phase2 gas cost based on amount of bets
  /// @return an estimate for resolvePhase2 gas cost
  function phase2Cost() internal view returns (uint256) {
    return 66347 * tx.gasprice + 18853 * players[result].length * tx.gasprice;
  }

  /// Get curent odds for the game
  /// @param _result result to bet on
  /// @return fxdPointNrRatio the odds for _result as ABDK Math 64.64-bit fixed point number
  function getOdds(bool _result) public view returns (int128 fxdPointNrRatio) {
    require(totalWagers[!_result] > 0 && totalWagers[_result] > 0, "No bets for all results yet."); // Div by 0 guard

    // 1 + [...]
    return 2**64 + ABDKMath64x64.divu(totalWagers[!_result], totalWagers[_result]);
  }

  /// Get curent odds for the game
  /// @param _result result to bet on
  /// @param _additionalWager additional artifical wager to add to the already placed bets for _result
  /// @return fxdPointNrRatio the odds for _result as ABDK Math 64.64-bit fixed point number
  function getOdds(bool _result, uint256 _additionalWager) external view returns (int128 fxdPointNrRatio) {
    require(totalWagers[!_result] > 0 && totalWagers[_result] + _additionalWager > 0, "No bets for all results yet."); // Div by 0 guard

    // 1 + [...]
    return 2**64 + ABDKMath64x64.divu(totalWagers[!_result], totalWagers[_result] + _additionalWager);
  }

  /**
   * Callback function used by VRF Coordinator
   */
  function fulfillRandomness(bytes32 _requestId, uint256 randomness) internal override {
    require(_requestId == requestId, "This is not your request to fulfill!");
    require(!fulfilled, "This request is already fulfilled!");
    result = randomness % 2 == 0;
    fulfilled = true;
    emit Result(result);
  }
}

