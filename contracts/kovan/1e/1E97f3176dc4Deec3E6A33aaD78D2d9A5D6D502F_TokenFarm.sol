pragma solidity ^0.8.0;
import "Ownable.sol";
import "IERC20.sol";
import "AggregatorV3Interface.sol";

contract TokenFarm is Ownable {
    //mapping token address -> staker address -> amount
    mapping(address => mapping(address => uint256)) public stakingBalance;
    address[] public stakers;
    mapping(address => uint256) public uniqueTokensStaked;
    address[] public allowedTokens;
    mapping(address => address) public tokenPriceFeedMapping;
    IERC20 public dappToken;

    //stake tokens
    //unstake tokens
    //issue token rewards
    //add allowed tokens to be allowed to be staked
    //get the value of the underlying tokens in eth

    constructor(address _dappTokenAddress) public {
        dappToken = IERC20(_dappTokenAddress);
    }

    function setPriceFeedContract(address _token, address _priceFeed)
        public
        onlyOwner
    {
        tokenPriceFeedMapping[_token] = _priceFeed;
    }

    function stakeTokens(uint256 _amount, address _token) public {
        require(_amount > 0, "amount must be more than 0");
        require(tokenIsAllowed(_token), "token isn't allowed");
        //transferFrom sender to contract. since called from contract, sender must approve spending first.
        IERC20(_token).transferFrom(msg.sender, address(this), _amount); //now we have the ABI via the interface, call into it and call the function
        updateUniqueTokensStaked(msg.sender, _token); //only add the owner to the list if they own exactly one token
        stakingBalance[_token][msg.sender] =
            stakingBalance[_token][msg.sender] +
            _amount; //staking balance of the token, @message sender is now that value plus new amount
        if (uniqueTokensStaked[msg.sender] == 1) {
            stakers.push(msg.sender);
        }
    }

    function unstakeTokens(address _token) public {
        uint256 balance = stakingBalance[_token][msg.sender];
        require(balance > 0, "Staking balance cannot be 0!");
        IERC20(_token).transfer(msg.sender, balance);
        stakingBalance[_token][msg.sender] = 0; //****is this vulnerable to reentrancy attacks???****
        uniqueTokensStaked[msg.sender] = uniqueTokensStaked[msg.sender] - 1;
        //we should also remove users from the uniqueStakers array** but we're not in here. it's okay since that check also checks for the value but it's sloppy
    }

    function updateUniqueTokensStaked(address _user, address _token) internal {
        if (stakingBalance[_token][_user] <= 0) {
            uniqueTokensStaked[_user] = uniqueTokensStaked[_user] + 1;
        }
    }

    //converting values of tokens to the base unit we want to use for token issuance
    function issueTokens() public onlyOwner {
        //need to loop over list of stakers so need to create that up above
        for (
            uint256 stakersIndex = 0;
            stakersIndex < stakers.length;
            stakersIndex++
        ) {
            address recipient = stakers[stakersIndex];
            // send them a token reward based on their TVL. need DAPP token address, need to figure out amount
            uint256 userTotalValue = getUserTotalValue(recipient);
            dappToken.transfer(recipient, userTotalValue); //we're going to double their TVL - issue the amount of DAPP token in reward as the user has staked on the platform!
        }
    }

    function getUserTotalValue(address _user) public returns (uint256) {
        //loop through all the coins staked, sum values (no one does this because it's horribly gas expensive)
        //normally people just let users claim airdrops - more gas efficient, more tax efficient (!)
        uint256 totalValue = 0;
        require(uniqueTokensStaked[_user] > 0, "The user has NO tokens staked");
        for (
            uint256 allowedTokenIndex = 0;
            allowedTokenIndex < allowedTokens.length;
            allowedTokenIndex++
        ) {
            totalValue =
                totalValue +
                getUserSingleTokenValue(
                    _user,
                    allowedTokens[allowedTokenIndex]
                );
        }
        return totalValue;
    }

    function getUserSingleTokenValue(address _user, address _token)
        public
        view
        returns (uint256)
    {
        if (uniqueTokensStaked[_user] <= 0) {
            return 0;
        }
        //price of token * stakingBalance[_token][user]
        (uint256 price, uint256 decimals) = getTokenValue(_token);
        // 10 eth (10*10**18)
        // eth/usd -> 100 (100*10**18)
        //10 *100 = 1000 (need to divide out decimals amount due to multiplication and units)

        return ((stakingBalance[_token][_user] * price) / (10**decimals));
    }

    function getTokenValue(address _token)
        public
        view
        returns (uint256, uint256)
    {
        //map token to address for price feeds
        address priceFeedAddress = tokenPriceFeedMapping[_token];
        AggregatorV3Interface priceFeed = AggregatorV3Interface(
            priceFeedAddress
        );
        (, int256 price, , , ) = priceFeed.latestRoundData();
        uint256 decimals = priceFeed.decimals();
        return (uint256(price), uint256(decimals));
    }

    function tokenIsAllowed(address _tokenAddress) public returns (bool) {
        for (
            uint256 allowedTokensIndex = 0;
            allowedTokensIndex < allowedTokens.length;
            allowedTokensIndex++
        ) {
            if (allowedTokens[allowedTokensIndex] == _tokenAddress) {
                return true;
            }
        }
        return false;
    }

    function addAllowedTokens(address _tokenAddress) public onlyOwner {
        allowedTokens.push(_tokenAddress);
    }
}

