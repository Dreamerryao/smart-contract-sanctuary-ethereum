// File: contracts/DropERC721.sol

pragma solidity ^0.6.12;





contract DropNFT is Ownable {


    using SafeMath for uint256;


    address public token = 0x97cA5AF5D75e9D266ffa2Ec1d7DCbDF1D26a1eA5;

    
    uint256 public totalUser = 0;
    uint256 public totalNumber = 0;

    struct UserInfo {
        uint256 pid;
        address user;
        uint256 tokenID;
        uint256 taked;
    }

    mapping(address => uint256) public UserId;
    mapping(uint256 => UserInfo) public UserData;
    


    function setToken(address _token) external onlyOwner returns (bool){
        token = _token;
        return true;
    }


    function addUser(address[] memory arr) external onlyOwner returns (uint256){
        require(arr.length > 0,'The address cannot be empty');
        for(uint256 i = 0 ; i < arr.length; i++){
            UserId[arr[i]] = totalUser;
            UserInfo storage userModel = UserData[totalUser];
            userModel.pid = totalUser;
            userModel.user = arr[i];
            totalUser = totalUser + 1;
        }
        return totalUser;
    }

    function addBalance(uint256[] memory arr) external onlyOwner returns (uint256){
        require(arr.length > 0,'The address cannot be empty');
        for(uint256 i = 0 ; i < arr.length; i++){
            UserInfo storage userModel = UserData[totalNumber];
            userModel.tokenID = arr[i];
            totalNumber = totalNumber + 1;
        }
        return totalNumber;
    }

    function setBalance(address _user,uint256 _balance) external onlyOwner returns (uint256){
        uint256 uid = UserId[_user];
        UserInfo storage userModel = UserData[uid];
        userModel.tokenID = _balance;
        return uid;
    }

    function pendingEarn(address _user) public view returns (uint256){
        uint256 uid = UserId[_user];
        UserInfo memory userModel = UserData[uid];
        return userModel.tokenID;
    }


    function take() external returns (uint256) {
        uint256 uid = UserId[msg.sender];
        UserInfo storage userModel = UserData[uid];
        require(userModel.taked == 0,'taked');
        require(userModel.tokenID > 0,'no NFT');
        IERC721(token).transferFrom(address(this), address(msg.sender), userModel.tokenID);
        userModel.taked = 1;
        return userModel.tokenID;
    }


    

}