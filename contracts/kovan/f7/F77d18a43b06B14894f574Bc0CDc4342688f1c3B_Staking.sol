import "erc721a-upgradeable/contracts/IERC721AUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/IERC20Upgradeable.sol";

contract Staking is Ownable, ReentrancyGuard, IERC721Receiver {
    using SafeERC20 for IERC20Upgradeable;

    // Interfaces for ERC20 and ERC721
    IERC20Upgradeable public immutable rewardsToken;
    IERC721AUpgradeable public immutable nftCollection;

    enum TimeFrame{ TWO_WEEKS, FOUR_WEEKS, EIGHT_WEEKS, TWELVE_WEEKS }
    // TimeFrame tm;

    // Locker info
    struct Locker {
        // Amount of ERC721A Tokens staked
        uint256 amountStaked;
        // Last time of details update for this User
        uint256 timeOfLastUpdate;
        // Calculated, but unclaimed rewards for the User. The rewards are
        // calculated each time the user writes to the Smart Contract
        uint256 unclaimedRewards;

        // timeFrame 
        TimeFrame timeFrame;
    }

    // Staker info
    struct Staker {
        // Amount of ERC721A Tokens staked
        uint256 amountStaked;
        // Last time of details update for this User
        uint256 timeOfLastUpdate;
        // Calculated, but unclaimed rewards for the User. The rewards are
        // calculated each time the user writes to the Smart Contract
        uint256 unclaimedRewards;
    }

    // Rewards per hour per token deposited in wei.
    // Rewards are cumulated/ collected once every hour.
    uint256 private rewardsPerTm = 4000000000000000000;  // 4 * 10**decimals()

    // 3600 = 1 hour = 60 * 60 
    // 86400 = 1 day = 60 * 60 * 24
    uint256 private rewardsTm = 60;  // 1 minutes

    // Mapping of User Address to Staker info
    mapping(address => Staker) public stakers;

    // Mapping of User Address to Locker info
    mapping(address => Locker) public lockers;

    // Mapping of Token Id to staker. Made for the SC to remeber
    // who to send back the ERC721 Token to.
    mapping(uint256 => address) public stakerAddress;
    
    mapping(uint256 => address) public lockerAddress;

    // Constructor function
    constructor(IERC721AUpgradeable _nftCollection, IERC20Upgradeable _rewardsToken) {
        nftCollection = _nftCollection;
        rewardsToken = _rewardsToken;
    }
     
    

    //to check balance of receiveAbleTokens 
    function checkReceivedTokensBalance() external view returns(uint balance){
        return rewardsToken.balanceOf(address(this));
    }
    
    // If address already has ERC721A Token/s staked, calculate the rewards.
    // For every new Token Id in param transferFrom user to this Smart Contract,
    // increment the amountStaked and map msg.sender to the Token Id of the staked
    // Token to later send back on unstake. Finally give timeOfLastUpdate the
    // value of now.
    function stake(uint256[] calldata _tokenIds) external  {  //nonReentrant

        if (stakers[msg.sender].amountStaked > 0) {
            uint256 rewards = calculateRewards(msg.sender);
            stakers[msg.sender].unclaimedRewards += rewards;
        }
        uint256 len = _tokenIds.length;
        for (uint256 i; i < len; ++i) {

            // checking ownership of NFT
            require(
                nftCollection.ownerOf(_tokenIds[i]) == msg.sender,
                "Can't stake tokens you don't own!"
            );

            // checking approval of NFT
            require(
                nftCollection.getApproved(_tokenIds[i]) == address(this),
                "Please approve NFT(s) first to stake"
            );

            // Transfering NFT from sender wallets to this contract for staking 
            nftCollection.transferFrom(msg.sender, address(this), _tokenIds[i]);

            // Storing the transfer details
            stakerAddress[_tokenIds[i]] = msg.sender;
        }
        
        stakers[msg.sender].amountStaked += len;
        stakers[msg.sender].timeOfLastUpdate = block.timestamp;
    }

    // Check if user has any ERC721 Tokens Staked and if he tried to withdraw,
    // calculate the rewards and store them in the unclaimedRewards and for each
    // ERC721 Token in param: check if msg.sender is the original staker, decrement
    // the amountStaked of the user and transfer the ERC721 token back to them
    function unstake(uint256[] calldata _tokenIds) external nonReentrant {
        require(
            stakers[msg.sender].amountStaked > 0, 
            "You have no tokens staked"
        );
        
        uint256 rewards = calculateRewards(msg.sender);
        stakers[msg.sender].unclaimedRewards += rewards;
        uint256 len = _tokenIds.length;

        for (uint256 i; i < len; ++i) {
            require(stakerAddress[_tokenIds[i]] == msg.sender);
            stakerAddress[_tokenIds[i]] = address(0);
            nftCollection.transferFrom(address(this), msg.sender, _tokenIds[i]);
        }

        // sending reward token 
        require(
            rewardsToken.balanceOf(address(this)) >= (stakers[msg.sender].unclaimedRewards),
            "Contract does not have Token to transfer reward"
        );

        rewardsToken.transfer(msg.sender, stakers[msg.sender].unclaimedRewards);
        delete stakers[msg.sender];
    }

    function lock(uint256[] calldata _tokenIds, TimeFrame _timeFrame) external  nonReentrant { 

        if (lockers[msg.sender].amountStaked > 0) {
            uint256 rewards = calculateLockRewards(msg.sender, _timeFrame);
            lockers[msg.sender].unclaimedRewards += rewards;
        }

        uint256 len = _tokenIds.length;
        for (uint256 i; i < len; ++i) {

            // checking ownership of NFT
            require(
                nftCollection.ownerOf(_tokenIds[i]) == msg.sender,
                "Can't stake tokens you don't own!"
            );

            // checking approval of NFT
            require(
                nftCollection.getApproved(_tokenIds[i]) == address(this),
                "Please approve NFT(s) first to stake"
            );

            // Transfering NFT from sender wallets to this contract for staking 
            nftCollection.transferFrom(msg.sender, address(this), _tokenIds[i]);

            // Storing the transfer details
            lockerAddress[_tokenIds[i]] = msg.sender;
        }

        lockers[msg.sender].timeFrame     = _timeFrame;
        lockers[msg.sender].amountStaked += len;
        lockers[msg.sender].timeOfLastUpdate = block.timestamp;
    }

    function unlock(uint256[] calldata _tokenIds) external nonReentrant {
        
        require(
            lockers[msg.sender].amountStaked > 0, 
            "You have no tokens staked"
        );

        uint256 cus_tme;
        uint256 tm           = (block.timestamp - lockers[msg.sender].timeOfLastUpdate);
        TimeFrame _timeFrame = lockers[msg.sender].timeFrame;

        if(_timeFrame == TimeFrame.TWO_WEEKS){
            cus_tme = 2 minutes;
        }else if(_timeFrame == TimeFrame.FOUR_WEEKS){
            cus_tme = 4 minutes;
        }else if(_timeFrame == TimeFrame.EIGHT_WEEKS){
            cus_tme = 8 minutes;
        }else if(_timeFrame == TimeFrame.TWELVE_WEEKS){
            cus_tme = 12 minutes;
        }

        require(tm >= cus_tme , "Please wait, lock period is not completed");

        uint256 rewards = calculateLockRewards(msg.sender, (lockers[msg.sender].timeFrame));
        lockers[msg.sender].unclaimedRewards += rewards;
        uint256 len = _tokenIds.length;

        for (uint256 i; i < len; ++i) {
            require(lockerAddress[_tokenIds[i]] == msg.sender);
            lockerAddress[_tokenIds[i]] = address(0);
            nftCollection.transferFrom(address(this), msg.sender, _tokenIds[i]);
        }

        // sending reward token 
        require(
            rewardsToken.balanceOf(address(this)) >= (lockers[msg.sender].unclaimedRewards),
            "Contract does not have Token to transfer reward"
        );

        rewardsToken.transfer(msg.sender, lockers[msg.sender].unclaimedRewards);
        delete lockers[msg.sender];
    }

    /////////////
    // Internal//
    /////////////

    // Calculate rewards for param _staker by calculating the time passed
    // since last update in hours and mulitplying it to ERC721 Tokens Staked
    // and rewardsPerTm.
    function calculateRewards(address _staker) internal view returns (uint256 _rewards)
    {
        // 3600 = 1 hour = 60 * 60 
        // 86400 = 1 day = 60 * 60 * 24
        uint256 tm = (block.timestamp - stakers[_staker].timeOfLastUpdate);
        require(tm >= rewardsTm, "Please wait for a day");
        if(tm >= rewardsTm){
            uint mod = tm % rewardsTm ;
            tm = tm - mod; 
        }else{
            tm = 0;
        }
        return (( tm * stakers[msg.sender].amountStaked * rewardsPerTm) / rewardsTm);  
    }

    function calculateLockRewards(address _locker, TimeFrame _timeFrame) internal view returns (uint256)
    {
        uint256 tm      = (block.timestamp - lockers[_locker].timeOfLastUpdate);
        uint256 reward  = 0;

        if((_timeFrame == TimeFrame.TWO_WEEKS) &&  (tm >= (2 minutes )) ){
            reward  = ((lockers[msg.sender].amountStaked * 4000000000000000000) * 14);   // 1-2 weeks  // 4

        }else if((_timeFrame == TimeFrame.FOUR_WEEKS) && (tm >= (4 minutes )) ){
            reward  = ((lockers[msg.sender].amountStaked * 4000000000000000000) * 14);   // 1-2 weeks  // 4
            reward += ((lockers[msg.sender].amountStaked * 8000000000000000000) * 14);   // 2-4 weeks  // 8

        }else if((_timeFrame == TimeFrame.EIGHT_WEEKS) && (tm >= (8 minutes )) ){
            reward  = ((lockers[msg.sender].amountStaked * 4000000000000000000) * 14);   // 1-2 weeks  // 4
            reward += ((lockers[msg.sender].amountStaked * 8000000000000000000) * 14);   // 2-4 weeks  // 8
            reward += ((lockers[msg.sender].amountStaked * 12500000000000000000) * 28);  // 4-8 weeks  // 12.5 

        }else if((_timeFrame == TimeFrame.TWELVE_WEEKS) && (tm >= (12 minutes )) ){
            reward  = ((lockers[msg.sender].amountStaked * 4000000000000000000) * 14);   // 1-2 weeks  // 4
            reward += ((lockers[msg.sender].amountStaked * 8000000000000000000) * 14);   // 2-4 weeks  // 8
            reward += ((lockers[msg.sender].amountStaked * 12500000000000000000) * 28);  // 4-8 weeks  // 12.5 
            reward += ((lockers[msg.sender].amountStaked * 20000000000000000000) * 28);  //8-12 weeks  // 20
        }

        return reward;  
    }

    function onERC721Received(address, address, uint256, bytes calldata) public virtual override returns (bytes4) {
        return this.onERC721Received.selector;
    }
}

