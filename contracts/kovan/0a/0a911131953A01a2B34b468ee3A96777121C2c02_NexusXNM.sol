import "./interfaces/INXMToken.sol";
import "./interfaces/IWNXMToken.sol";


contract NexusXNM {
     using SafeMath for uint256;
     IUniswapV2Router02 uniswapRouter;
     INXMMaster master;

     INXMToken NXM;
     IWNXMToken wNXM;
     IERC20 DAI;
     IERC20 USDT;     
     IERC20 USDC;
     IERC20 wETH;
     address ETH;


     constructor(){
         master = INXMMaster(0x2561D7f2436C121281388ecd54c702e55Aa24043);
         uniswapRouter = IUniswapV2Router02(0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D);
         NXM = INXMToken(master.tokenAddress());
         wNXM = IWNXMToken(0x1bB13D311f3158E6597B37aA9b50164ead173CF2);
         DAI = IERC20(0x5C422252C6a47CdacF667521566Bf7bD5b0d769B); //Kovan
         USDC = IERC20(0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48);
         USDT = IERC20(0xcc54b12a18f2C575CA97991046090f43C3070aA0);
         wETH = IERC20(0xd0A1E359811322d97991E03f863a0C30C2cF029C);
         ETH = 0xEeeeeEeeeEeEeeEeEeEeeEEEeeeeEeeeeeeeEEeE;
     }   
     
    function _howManyTokensAinB(
        address tokenA,
        address tokenB,
        uint256 amount
    ) internal view returns (uint256) {
        if (amount < 10 * 10**6) {
            //10 mWei
            return 0;
        }

        address[] memory pairs = new address[](3);
        pairs[0] = tokenB;
        pairs[1] = address(wETH);
        pairs[2] = tokenA;

        uint256[] memory amounts = uniswapRouter.getAmountsOut(amount, pairs);

        return amounts[amounts.length - 1];
    }


    function getDiscountEarnings(address _buyingAsset, uint256 _coverPrice) public returns(uint256 _earnings){
        uint256 _wNXMamount = _howManyTokensAinB(address(wNXM),address(_buyingAsset),_coverPrice);
        uint256 _wNXMamountInBuyingAsset = _howManyTokensAinB(address(_buyingAsset),address(wNXM), _wNXMamount);
        _earnings = _coverPrice.sub(_wNXMamountInBuyingAsset);
    }



    
    function _swapTokenForToken(
        uint256 _amountOut,
        address _from,
        address _to
    ) internal returns (uint256) {
        if (_amountOut == 0) {
            return 0;
        }

        address[] memory pairs = new address[](3);
        pairs[0] = _from;
        pairs[1] = address(wETH);
        pairs[2] = _to;

        return
            uniswapRouter.swapExactTokensForTokens(
                _amountOut,
                0,
                pairs,
                address(this),
                block.timestamp.add(600)
            )[pairs.length.sub(1)];
    }



}

