import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721Receiver.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/ERC20Burnable.sol";

import "./RealMath.sol";

contract FiresaleArt is ReentrancyGuard, ERC20Burnable, Ownable, IERC721Receiver {
    using RealMath for uint256;

    event TreasuryUpdated(address sender, address treasury, uint128 basisPoints);
    event Swapped(address indexed account, address indexed tokenContract, uint128 numTokens);

    address private _treasury = address(0); // address where NFTs and $LIT are sent
    uint128 private _treasuryBasisPoints = 500; // share of $LIT that goes into the treasury

    // Bonding curve constants
    // See: https://www.desmos.com/calculator/ymtgwhewle
    uint256 private constant CURVE_EXP = 500000000000000000;
    uint256 private constant CURVE_BASE = 1000000000000000000000;
    uint256 private constant CURVE_HALVING = 5000000000000000000000000;
    
    // used in depositMultiERC721Batch
    // represents multiple NFTs across multiple ERC721 contracts
    struct Bundle {
        address from;  // address of the ERC721 contract
        uint256[] tokenIds; // array of tokenIds
    }

    constructor () ERC20('Firesale.art', "LIT") {}

    function setTreasury(address treasury, uint128 basisPoints) onlyOwner public {
        require(basisPoints < 10000, "NFT2ERC20: basisPoints must be less than 10000 (100%)");
        _treasury = treasury;
        _treasuryBasisPoints = basisPoints;
        emit TreasuryUpdated(msg.sender, treasury, basisPoints);
    }

    function getTreasury() external view returns (address, uint128) {
        return (_treasury, _treasuryBasisPoints);
    }

    function getRate() public view returns (uint256) {
        return CURVE_EXP.rpow(totalSupply().rdiv(CURVE_HALVING)).rmul(CURVE_BASE);
    }

    // single deposit ERC721 token using the built in ERC721Receiver.safeTranserFrom
    // does not require setApprovalForAll
    function onERC721Received(
        address,
        address from,
        uint256 tokenId,
        bytes calldata
    ) public virtual override returns (bytes4) {
        require(_treasury != address(0), "Vault cannot be the 0x0 address");

        IERC721(msg.sender).safeTransferFrom(address(this), _treasury, tokenId);
        _burnToken(address(this), 1, from);
        
        return this.onERC721Received.selector;
    }

    // batch deposit ERC721 tokens from possibly multiple contracts
    // requires that setApprovalForAll has been called on all contracts
    function depositMultiERC721Batch(
          Bundle[] calldata _bundles
    ) external returns (bytes4) {
        require(_treasury != address(0), "Vault cannot be the 0x0 address");

        uint128 numDeposits = 0;
        for (uint i=0; i<_bundles.length; i++) {
            for (uint j=0; j<_bundles[i].tokenIds.length; j++) {
                IERC721(_bundles[i].from).safeTransferFrom(msg.sender, _treasury, _bundles[i].tokenIds[j]);
                numDeposits++;
            }
        }

       _burnToken(address(this), numDeposits, msg.sender);

        return this.depositMultiERC721Batch.selector;
    }

    function _burnToken(address tokenContract, uint128 numTokens, address receiver) private nonReentrant {
        uint256 rate = getRate();

        _mint(receiver, rate * numTokens);
        emit Swapped(receiver, tokenContract, numTokens);

        // Treasury gets additional minted $LIT
        if (_treasuryBasisPoints > 0 && _treasury != address(0x0)) {
            uint256 treasuryRate = (rate * _treasuryBasisPoints) / 10000;
            if (treasuryRate > 0) {
                _mint(_treasury, treasuryRate * numTokens);
            }
        }
    }

    receive () external payable { }
}

