// File: ZooNftStakingPool.sol

contract ZooNftStakingPool
{
	/// @notice Event records info about staked nft in this pool.
	event StakedNft(address indexed staker, address indexed token, uint256 id);

	/// @notice Event records info about withdrawed nft from this pool.
	event UnstakedNft(address indexed staker, address indexed token, uint256 id);

	// NFT contract's address => NFT's id => address of staker.
	mapping (address => mapping (uint256 => address)) public ownerOf;

	IStakingRewards public stakingRewards;

	constructor (address _stakingRewards)
	{
		stakingRewards = IStakingRewards(_stakingRewards);
	}

	/// @notice Function for staking NFT in this pool.
	/// @param token - address of Nft token to stake.
	/// @param id - id of nft token.
	function stakeNft(address token, uint256 id) external
	{
		require(stakingRewards.balanceOf(msg.sender) != 0, "staking err");

		IERC721 nft = IERC721(token);
		nft.transferFrom(msg.sender, address(this), id);

		ownerOf[token][id] = msg.sender;

		emit StakedNft(msg.sender, token, id);
	}

	function unstakeNft(address token, uint256 id) external
	{
		require(ownerOf[token][id] == msg.sender, "unstaking err");

		IERC721 nft = IERC721(token);
		nft.transferFrom(address(this), msg.sender, id);
		ownerOf[token][id] = address(0);

		emit UnstakedNft(msg.sender, token, id);
	}
}