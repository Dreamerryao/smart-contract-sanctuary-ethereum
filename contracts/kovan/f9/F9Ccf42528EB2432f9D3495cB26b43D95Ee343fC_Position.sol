contract Position is Initializable, ERC721EnumerableUpgradeable, IPosition {
  using WadRayMath for uint256;

  // positions management
  struct PositionDetails {
    uint256 adjustedBalance;
    uint256 rate;
    bytes32 borrower; // kept for later use, ie onchain svg generation
    address underlyingToken;
    uint256 remainingBonds;
    uint256 bondsMaturity;
    uint256 bondsIssuanceIndex;
  }
  mapping(uint256 => PositionDetails) public _positions;

  // next position id
  uint256 private _nextId = 1;

  IBorrowPool public pool;

  function supportsInterface(bytes4 interfaceId) public view override(ERC721EnumerableUpgradeable) returns (bool) {
    return super.supportsInterface(interfaceId);
  }

  function initialize(
    string memory _name,
    string memory _symbol,
    IBorrowPool _pool
  ) public virtual initializer {
    __ERC721_init(_name, _symbol);
    pool = _pool;
  }

  function getPositionRepartition(uint256 tokenId) external view returns (uint256, uint256) {
    return
      pool.getAmountRepartition(
        _positions[tokenId].borrower,
        _positions[tokenId].rate,
        _positions[tokenId].adjustedBalance,
        _positions[tokenId].bondsIssuanceIndex
      );
  }

  function deposit(
    address to,
    uint256 amount,
    uint256 rate,
    string calldata borrower,
    address underlyingToken
  ) external override {
    uint256 tokenId = _nextId++;
    bytes32 borrowerHash = keccak256(abi.encode(borrower));

    _safeMint(to, tokenId);

    (uint256 adjustedBalance, uint256 bondsIssuanceIndex) = pool.deposit(
      amount,
      rate,
      borrowerHash,
      underlyingToken,
      _msgSender()
    );

    _positions[tokenId] = PositionDetails({
      adjustedBalance: adjustedBalance,
      rate: rate,
      borrower: borrowerHash,
      underlyingToken: underlyingToken,
      remainingBonds: 0,
      bondsMaturity: 0,
      bondsIssuanceIndex: bondsIssuanceIndex
    });

    emit Deposit(to, tokenId, amount, rate, borrowerHash, address(underlyingToken));
  }

  function updateRate(uint256 tokenId, uint256 newRate) external override {
    require(ownerOf(tokenId) == _msgSender(), Errors.POS_MGMT_ONLY_OWNER);

    uint256 oldRate = _positions[tokenId].rate;

    (uint256 newAmount, uint256 newBondsIssuanceIndex) = pool.updateRate(
      _positions[tokenId].adjustedBalance,
      _positions[tokenId].borrower,
      oldRate,
      newRate,
      _positions[tokenId].bondsIssuanceIndex
    );

    _positions[tokenId].adjustedBalance = newAmount;
    _positions[tokenId].rate = newRate;
    _positions[tokenId].bondsIssuanceIndex = newBondsIssuanceIndex;

    emit UpdateRate(
      _msgSender(),
      tokenId,
      newAmount,
      newRate,
      _positions[tokenId].borrower,
      address(_positions[tokenId].underlyingToken)
    );
  }

  function withdraw(uint256 tokenId) external override {
    require(ownerOf(tokenId) == _msgSender(), Errors.POS_MGMT_ONLY_OWNER);
    Types.WithdrawInput memory input;
    input.adjustedAmount = _positions[tokenId].adjustedBalance;
    input.rate = _positions[tokenId].rate;
    input.borrower = _positions[tokenId].borrower;
    input.owner = _msgSender();
    input.bondsIssuanceIndex = _positions[tokenId].bondsIssuanceIndex;

    (uint256 withdrawnDeposit, uint256 remainingBonds, uint256 bondsMaturity, uint256 normalizedWithdrawnDeposit) = pool
      .withdraw(input);

    _positions[tokenId].adjustedBalance -= withdrawnDeposit;
    _positions[tokenId].remainingBonds = remainingBonds;
    _positions[tokenId].bondsMaturity = bondsMaturity;

    emit Withdraw(
      _msgSender(),
      tokenId,
      normalizedWithdrawnDeposit,
      remainingBonds,
      _positions[tokenId].rate,
      _positions[tokenId].borrower,
      address(_positions[tokenId].underlyingToken)
    );

    // NOTE: i think its enough to check if remaining Bonds = 0 to burn here, because deposits of the position have been withdrawn if we arive here
    if (_positions[tokenId].adjustedBalance <= 100 && _positions[tokenId].remainingBonds == 0) {
      _burn(tokenId);
      delete _positions[tokenId];
      emit BurnPosition(_msgSender(), tokenId);
    }
  }
}

