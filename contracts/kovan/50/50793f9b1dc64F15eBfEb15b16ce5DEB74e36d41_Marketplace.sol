pragma solidity 0.8.12;
import {Ownable} from "@openzeppelin/contracts/access/Ownable.sol";
import {ReentrancyGuard} from "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import {MerkleProof} from "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";
import {IERC721} from "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import {IERC1155} from "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import {IERC20} from "@openzeppelin/contracts/token/ERC20/IERC20.sol";

contract BRTClaim is Ownable, ReentrancyGuard
{
    /***************************/
    /********** STRUCT *********/
    /***************************/

    struct Claim
    {
        string Name;
        uint StartingIndex;
        uint EndingIndex;
        uint ClaimableAmountBrightList;
        uint ClaimableAmountPublic;
        uint ERC_TYPE;
        address ContractAddress;
        address Operator;
        bytes32 Root;
        bool ActiveBrightList;
        bool ActivePublic;
    }

    /***************************/
    /********* MAPPINGS ********/
    /***************************/

    mapping(uint => Claim) private Claims;
    mapping(uint => mapping(address => bool)) public ClaimedBrightList;
    mapping(uint => mapping(address => bool)) public ClaimedPublic;
    mapping(address => bool) public BRTOperators;

    /***************************/
    /********** EVENTS *********/
    /***************************/

    event ClaimedBrightListEvent(address indexed claimAddress, uint indexed ClaimIndex, uint amount);
    event ClaimedPublicEvent(address indexed claimAddress, uint indexed ClaimIndex, uint amount);
    event ClaimsStarted(uint StartingIndex, uint EndingIndex);
    event ClaimStarted(
        string Name,
        uint ClaimIndex,
        uint StartingIndex,
        uint EndingIndex, 
        uint ClaimableClaimableAmountBrightList,
        uint ClaimableClaimableAmountPublic, 
        uint ERC_TYPE, 
        address ContractAddress, 
        address Operator, 
        bytes32 RootHash, 
        bool ActiveBrightList,
        bool ActivePublic);
    uint public UniqueClaimIndex;
    event ClaimEnded(uint ClaimIndex);

    /**
     * @dev Constructor
     */
    constructor() { BRTOperators[msg.sender] = true; } 

    /***************************/
    /***** PUBLIC FUNCTIONS ****/
    /***************************/

    /**
     * @dev Claims BrightList Allocation
     */
    function ClaimBrightList(uint ClaimIndex, bytes32[] calldata proof) public nonReentrant 
    { 
        require(Claims[ClaimIndex].ActiveBrightList, "Requested BrightList Sale Is Not Active");
        require(!ClaimedBrightList[ClaimIndex][msg.sender], "User Has Already Claimed BrightList Allocation");
        require(Claims[ClaimIndex].StartingIndex + Claims[ClaimIndex].ClaimableAmountBrightList <= Claims[ClaimIndex].EndingIndex, "Not Enough Items Left To Claim");
        require(MerkleProof.verify(proof, Claims[ClaimIndex].Root, keccak256(abi.encodePacked(msg.sender))), "Msg.sender Has No BrightList Allocation");
        if(!ClaimedBrightList[ClaimIndex][msg.sender]) { ClaimedBrightList[ClaimIndex][msg.sender] = true; }
        for(uint i; i < Claims[ClaimIndex].ClaimableAmountBrightList; i++)
        {
            if(Claims[ClaimIndex].ERC_TYPE == 721)
            {
                IERC721(Claims[ClaimIndex].ContractAddress).transferFrom(
                    Claims[ClaimIndex].Operator,
                    msg.sender, 
                    Claims[ClaimIndex].StartingIndex
                );
                Claims[ClaimIndex].StartingIndex++;
            }
            else if(Claims[ClaimIndex].ERC_TYPE == 1155)
            {
                IERC1155(Claims[ClaimIndex].ContractAddress).safeTransferFrom(
                    Claims[ClaimIndex].Operator, msg.sender,
                    Claims[ClaimIndex].StartingIndex, 
                    Claims[ClaimIndex].ClaimableAmountBrightList, 
                    "BRT"
                );
                Claims[ClaimIndex].StartingIndex++;
            }
            else if (Claims[ClaimIndex].ERC_TYPE == 20) 
            {
                IERC20(Claims[ClaimIndex].ContractAddress).transfer(msg.sender, Claims[ClaimIndex].ClaimableAmountBrightList);
            }
        }
        emit ClaimedBrightListEvent(msg.sender, ClaimIndex, Claims[ClaimIndex].ClaimableAmountBrightList);
    }

    /**
     * @dev Claims Public Allocation
     */
    function ClaimPublic(uint ClaimIndex) public nonReentrant 
    { 
        require(Claims[ClaimIndex].ActivePublic, "BrightList Index Is Not Open To Public");
        require(!ClaimedPublic[ClaimIndex][msg.sender], "User Has Already Claimed BrightList Allocation");
        require(Claims[ClaimIndex].StartingIndex + Claims[ClaimIndex].ClaimableAmountPublic <= Claims[ClaimIndex].EndingIndex, "Not Enough Items Left To Claim");
        if(!ClaimedPublic[ClaimIndex][msg.sender]) { ClaimedPublic[ClaimIndex][msg.sender] = true; }
        for(uint i; i < Claims[ClaimIndex].ClaimableAmountPublic; i++)
        {
            if(Claims[ClaimIndex].ERC_TYPE == 721)
            {
                IERC721(Claims[ClaimIndex].ContractAddress).transferFrom(Claims[ClaimIndex].Operator, msg.sender, Claims[ClaimIndex].StartingIndex);
                Claims[ClaimIndex].StartingIndex++;
            }
            else if(Claims[ClaimIndex].ERC_TYPE == 1155)
            {
                IERC1155(Claims[ClaimIndex].ContractAddress).safeTransferFrom(Claims[ClaimIndex].Operator, msg.sender, Claims[ClaimIndex].StartingIndex, Claims[ClaimIndex].ClaimableAmountPublic, "BRT");
                Claims[ClaimIndex].StartingIndex++;
            }
            else if (Claims[ClaimIndex].ERC_TYPE == 20)
            {
                IERC20(Claims[ClaimIndex].ContractAddress).transfer(msg.sender, Claims[ClaimIndex].ClaimableAmountPublic);
            }
        }
        emit ClaimedPublicEvent(msg.sender, ClaimIndex, Claims[ClaimIndex].ClaimableAmountBrightList);
    }

    /***************************/
    /**** OPERATOR COMMANDS ****/
    /***************************/

    /**
     * @dev Sets Up A New Claim
     * note: ERC_TYPE = (721 | 1155 | 20) For Corresponding ERC-TYPE
     * note: StartingIndex = The First tokenID To Claim
     * note: EndingIndex = The Last tokenID To Claim
     * note: ClaimableAmountBrightList = Claimable Amount Per Wallet For BrightList
     * note: ClaimableAmountPublic = Claimable Amount Per Wallet For Public
     * note: Root = Merkle Root
     * note: Operator = Address That NFTs Are Pulled From
     * note: Active = Is Sale Active To Claim After This Function Confirms (true | false)
     * note: Public = Is Sale Available To The Public (true | false)
     */
    function _StartClaim(Claim memory NewClaim) external onlyBRTOperator
    {
        require(
            NewClaim.ERC_TYPE == 721 || NewClaim.ERC_TYPE == 1155 || NewClaim.ERC_TYPE == 20,
            "Please Enter Valid ERC-TYPE, (721 for ERC-721), (1155 for ERC-1155), (20 for ERC-20)"
        );
        UniqueClaimIndex++;
        Claims[UniqueClaimIndex].Name = NewClaim.Name;
        Claims[UniqueClaimIndex].StartingIndex = NewClaim.StartingIndex;
        Claims[UniqueClaimIndex].EndingIndex = NewClaim.EndingIndex;
        Claims[UniqueClaimIndex].ClaimableAmountBrightList = NewClaim.ClaimableAmountBrightList;
        Claims[UniqueClaimIndex].ClaimableAmountPublic = NewClaim.ClaimableAmountPublic;
        Claims[UniqueClaimIndex].ERC_TYPE = NewClaim.ERC_TYPE;
        Claims[UniqueClaimIndex].ContractAddress = NewClaim.ContractAddress;
        Claims[UniqueClaimIndex].Operator = NewClaim.Operator;
        Claims[UniqueClaimIndex].Root = NewClaim.Root;
        Claims[UniqueClaimIndex].ActiveBrightList = NewClaim.ActiveBrightList;
        Claims[UniqueClaimIndex].ActivePublic = NewClaim.ActivePublic;
        emit ClaimStarted(
            NewClaim.Name,
            UniqueClaimIndex,
            NewClaim.StartingIndex,
            NewClaim.EndingIndex,
            NewClaim.ClaimableAmountBrightList,
            NewClaim.ClaimableAmountPublic,
            NewClaim.ERC_TYPE,
            NewClaim.ContractAddress,
            NewClaim.Operator, 
            NewClaim.Root,
            NewClaim.ActiveBrightList,
            NewClaim.ActivePublic
        );
    }

    /**
     * @dev Batch Starts New Claims
     */
    function _StartClaims(Claim[] memory NewClaim) external onlyBRTOperator
    {
        uint StartingIndex = UniqueClaimIndex;
        for(uint i; i < NewClaim.length; i++)
        {
            require(
                NewClaim[i].ERC_TYPE == 721 || NewClaim[i].ERC_TYPE == 1155 || NewClaim[i].ERC_TYPE == 20,
                "Please Enter Valid ERC-TYPE, (721 for ERC-721), (1155 for ERC-1155), (20 for ERC-20)"
            );
            UniqueClaimIndex++;
            Claims[UniqueClaimIndex].Name = NewClaim[i].Name;
            Claims[UniqueClaimIndex].StartingIndex = NewClaim[i].StartingIndex;
            Claims[UniqueClaimIndex].EndingIndex = NewClaim[i].EndingIndex;
            Claims[UniqueClaimIndex].ClaimableAmountBrightList = NewClaim[i].ClaimableAmountBrightList;
            Claims[UniqueClaimIndex].ClaimableAmountPublic = NewClaim[i].ClaimableAmountPublic;
            Claims[UniqueClaimIndex].ERC_TYPE = NewClaim[i].ERC_TYPE;
            Claims[UniqueClaimIndex].ContractAddress = NewClaim[i].ContractAddress;
            Claims[UniqueClaimIndex].Operator = NewClaim[i].Operator;
            Claims[UniqueClaimIndex].Root = NewClaim[i].Root;
            Claims[UniqueClaimIndex].ActiveBrightList = NewClaim[i].ActiveBrightList;
            Claims[UniqueClaimIndex].ActivePublic = NewClaim[i].ActivePublic;
        }
        emit ClaimsStarted(StartingIndex, UniqueClaimIndex);
    }

    /**
     * @dev Changes BrightList Claim Name `Name` At Index `ClaimIndex`
     * note: This Is The Name Of The Claim
     */
    function _ChangeClaimName(uint ClaimIndex, string calldata Name) external onlyBRTOperator { Claims[ClaimIndex].Name = Name; }

    /**
     * @dev Changes BrightList StartingIndex `Index` At Index `ClaimIndex`
     * note: This Is The Starting Token ID
     */
    function _ChangeClaimStartingIndex(uint ClaimIndex, uint Index) external onlyBRTOperator { Claims[ClaimIndex].StartingIndex = Index; }

    /**
     * @dev Changes BrightList EndingIndex `Index` At Index `ClaimIndex`
     * note: This Is The Ending Token ID
     */
    function _ChangeClaimEndingIndex(uint ClaimIndex, uint Index) external onlyBRTOperator { Claims[ClaimIndex].EndingIndex = Index; }

    /**
     * @dev Changes Brightlist Receivable Amount `Amount` At Index `ClaimIndex`
     * note: This Is The BrightList Allocation
     */
    function _ChangeBrightListAllocation(uint ClaimIndex, uint Amount) external onlyBRTOperator { Claims[ClaimIndex].ClaimableAmountBrightList = Amount; }

    /**
     * @dev Changes Brightlist Public Receivable Amount `Amount` At Index `ClaimIndex`
     * note: This Is The Public Allocation
     */
    function _ChangeBrightListPublicAllocation(uint ClaimIndex, uint Amount) external onlyBRTOperator { Claims[ClaimIndex].ClaimableAmountPublic = Amount; }
    
    /**
     * @dev Changes BrightList ERC Type `ERC_TYPE` At Index `ClaimIndex`
     * note: Possible Inputs Are:
     * `721` - ERC721
     * `1155` - ERC1155
     * `20` - ERC20
     */
    function _ChangeClaimERC_TYPE(uint ClaimIndex, uint ERC_TYPE) external onlyBRTOperator 
    {
        require(ERC_TYPE == 721 || ERC_TYPE == 1155 || ERC_TYPE == 20, "Incorrect ERC_TYPE"); 
        Claims[ClaimIndex].ERC_TYPE = ERC_TYPE; 
    }

    /**
     * @dev Changes BrightList Contract Address `Contract` At Index `ClaimIndex`
     * note: This Is The NFT Address That Is Being Claimed
     */
    function _ChangeClaimContract(uint ClaimIndex, address Contract) external onlyBRTOperator { Claims[ClaimIndex].ContractAddress = Contract; }

    /**
     * @dev Changes BrightList Root `RootHash` At Index `ClaimIndex`
     * note: This Is The Merkle Root
     */
    function _ChangeClaimRoot(uint ClaimIndex, bytes32 RootHash) external onlyBRTOperator { Claims[ClaimIndex].Root = RootHash; }

    /**
     * @dev Changes BrightList Operator `operator` At Index `ClaimIndex`
     * note: This Is The Wallet / Address / EOA That The NFTs Are Pulling From
     */
    function _ChangeClaimOperator(uint ClaimIndex, address operator) external onlyBRTOperator { Claims[ClaimIndex].Operator = operator; }

    /**
     * @dev Changes BrightList Sale State `State` At Index `ClaimIndex`
     * note: Possible Inputs are `true` or `false`
     */
    function _ChangeClaimActiveState(uint ClaimIndex, bool State) external onlyBRTOperator { Claims[ClaimIndex].ActiveBrightList = State; }

    /**
     * @dev Ends Claim At Index `ClaimIndex`
     */
    function _EndClaim(uint ClaimIndex) external onlyBRTOperator { Claims[ClaimIndex].ActiveBrightList = false; }

    /***************************/
    /****** ADMIN COMMANDS *****/
    /***************************/

    /**
     * @dev Adds Bright Moments Operator
     * note: OnlyOwner
     */
    function __OperatorAdd(address operator) external onlyOwner { BRTOperators[operator] = true; }

    /**
     * @dev Removes Bright Moments Operator
     * note: OnlyOwner
     */
    function __OperatorRemove(address operator) external onlyOwner { BRTOperators[operator] = false; }

    /**
     * @dev Withdraws Ether From Contract To Message Sender
     * note: OnlyOwner
     */
    function __Withdraw() external onlyOwner { payable(msg.sender).transfer(address(this).balance); }

    /**
     * @dev Withdraws Ether From Contract To Address
     * note: OnlyOwner
     */
    function __WithdrawToAddress(address payable recipient) external onlyOwner 
    {
        uint balance = address(this).balance;
        require(balance > 0, "Insufficient Balance");
        (bool success, ) = recipient.call{value: balance}("");
