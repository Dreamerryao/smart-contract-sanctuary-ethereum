pragma solidity 0.8.12;
import {Ownable} from "@openzeppelin/contracts/access/Ownable.sol";
import {ReentrancyGuard} from "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import {MerkleProof} from "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";
import {ERC721S} from "./ERC721S.sol";

contract SnipeDAO is Ownable, ReentrancyGuard, ERC721S
{
    address private immutable SNIPE_DAO_MULTISIG = 0xA97f98Bb52E68BDFbba2683cF897fe79Ca67edfC;
    uint256 public SnipeDAOEntryFee = 2 ether;
    uint256 public TOTAL_TOKENS_MINTED = 0;
    uint256 public MAX_TOKENS = 99;
    bytes32 root = 0x00;
    string baseURI = "ipfs://HASH/";

    mapping(address=>bool) SnipeDAOClaimed;
    mapping(address=>bool) SnipeDAOEntered;
    event SnipeDAOEntry(address indexed recipient);
    
    /**
     * @dev Constructor That Mints Collection
     */
    constructor() ERC721S("sDAO","SnipeDAO") 
    {
        transferOwnership(SNIPE_DAO_MULTISIG);
    } 

    /**
     * @dev Joins SnipeDAO
     * note: 2ETH For Entry
     */
    function JoinSnipeDAO() public payable nonReentrant
    {
        require(tx.origin == msg.sender, "No External Contracts");
        require(TOTAL_TOKENS_MINTED + 1 <= MAX_TOKENS, "SnipeDAO Has Been Minted Out");
        require(!SnipeDAOEntered[msg.sender], "User Has Already Entered SnipeDAO");
        require(msg.value == SnipeDAOEntryFee, "Ether Value Sent Is Not Correct. 2ETH For Membership");
        require(TOTAL_TOKENS_MINTED + 1 <= MAX_TOKENS, "SnipeDAO Founders Allocation Has Sold Out");
        SnipeDAOEntered[msg.sender] = true;
        _mint(msg.sender, 1, "", false);
        TOTAL_TOKENS_MINTED += 1;
        emit SnipeDAOEntry(msg.sender);
    }
    
    /**
     * @dev Claims SnipeDAO Founder Token
     * note: For The Initial SnipeDAO Founders
     */
    function ClaimSnipeDAO(bytes32[] calldata proof) public nonReentrant 
    {
        require(tx.origin == msg.sender, "No External Contracts");
        require(TOTAL_TOKENS_MINTED + 1 <= MAX_TOKENS, "SnipeDAO Has Been Minted Out");
        require(!SnipeDAOClaimed[msg.sender], "User Has Already Claimed SnipeDAO Founder Allocation");
        bytes32 leaf = keccak256(abi.encodePacked(msg.sender));
        require(MerkleProof.verify(proof, root, leaf), "Msg.sender Has No SnipeDAO Founder Allocation");
        SnipeDAOClaimed[msg.sender] = true;
        _mint(msg.sender, 1, "", false);
        TOTAL_TOKENS_MINTED += 1;
        emit SnipeDAOEntry(msg.sender);
    }

    /**
     * @dev Withdraws Ether From Contract To Message Sender
     */
    function _Withdraw() external onlyOwner { payable(msg.sender).transfer(address(this).balance); }

    /**
     * @dev Withdraws Ether From Contract To Address
     */
    function _WithdrawToAddress(address payable recipient) external onlyOwner 
    {
        uint256 balance = address(this).balance;
        (bool success, ) = recipient.call{value: balance}("");
        require(success, "Unable to Withdraw, Recipient May Have Reverted");
    }

    /**
     * @dev Checks BrightList Allocation
     */
    function viewSnipeDAOAllocation(address recipient, bytes32[] memory proof) public view returns(bool)
    { 
        bytes32 leaf = keccak256(abi.encodePacked(recipient));
        return MerkleProof.verify(proof, root, leaf);
    }

    /**
     * @dev Returns Base URI
     */
    function _baseURI() internal view virtual override returns (string memory) { return baseURI; }

    /**
     * @dev Sets Base URI
     */
    function setBaseURI(string calldata newBaseURI) external onlyOwner { baseURI = newBaseURI; }
}

