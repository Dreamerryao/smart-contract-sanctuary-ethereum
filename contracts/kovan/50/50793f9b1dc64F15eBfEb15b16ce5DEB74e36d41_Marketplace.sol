import {MerkleProof} from "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";

contract GATicket721A is ERC721A, Ownable, ReentrancyGuard
{
    bytes32 private root = 0x52222045c68357c7bf2f129b7645b3878e0a409d743b52c22ef1d5bac4facb2a;
    uint256 public TICKET_PRICE = 0.01 ether;
    uint256 public claimAmount = 9;
    address immutable BRT_MULTISIG = address(0);
    string public baseURI = "ipfs://IPFS_HASH/";
    mapping(address=>bool) BrightList;
    event TicketClaimed(address indexed claimAddress);

    /**
     * @dev Constructor That Mints Collection
     */
    constructor() ERC721A("GA", "BRT GA Ticket") { } 

    /**
     * @dev Mints GA Ticket NFT To Wallet
     */
    function mint(uint256 amount, address wallet) external onlyOwner { _mint(wallet, amount, "", false); }

    /**
     * @dev Claims BrightList GA Ticket
     */
    function claim(bytes32[] calldata proof) external onlyBrightList nonReentrant 
    { 
        bytes32 leaf = keccak256(abi.encodePacked(msg.sender));
        require(MerkleProof.verify(proof, root, leaf), "Msg.sender Has No BrightList Allocation");
        _mint(msg.sender, claimAmount, "", false); 
        emit TicketClaimed(msg.sender);
    }

    /**
     * @dev Purchases GA Ticket
     */
    function purchase(uint256 ticketAmount) public payable nonReentrant
    {
        require(tx.origin == msg.sender, "No External Contracts");
        require(msg.value == TICKET_PRICE * ticketAmount, "Payable Ticket Price Sent Is Incorrect. 0.01 ETH Per Ticket");
        _mint(msg.sender, ticketAmount, "", false);
    }

    /**
     * @dev Returns Base URI
     */
    function _baseURI() internal view virtual override returns (string memory) { return baseURI; }

    /**
     * @dev Sets Base URI
     */
    function setBaseURI(string calldata newBaseURI) external onlyOwner { baseURI = newBaseURI; }

    /**
     * @dev Sets Individual BrightList
     */
    function setBrightListIndividual(address recipient, bool value) external onlyOwner { BrightList[recipient] = value; }

    /**
     * @dev Withdraws Ether From Contract To Message Sender
     */
    function __withdraw() external onlyOwner { payable(msg.sender).transfer(address(this).balance); }

    /**
     * @dev Withdraws Ether From Contract To Address
     */
    function __withdrawToAddress(address payable recipient) external onlyOwner 
    {
        uint256 balance = address(this).balance;
        (bool success, ) = recipient.call{value: balance}("");
        require(success, "Unable to Withdraw, Recipient May Have Reverted");
    }

    /**
     * @dev Modifies BrightList
     */
    function modifyBrightListRoot(bytes32 newRoot) external onlyOwner { root = newRoot; }

