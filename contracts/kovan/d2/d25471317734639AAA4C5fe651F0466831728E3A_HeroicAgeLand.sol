pragma solidity 0.8.11;

import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/token/ERC721/utils/ERC721Holder.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

interface IHeroicAge {
    function customizeMint(address to, uint256 tokenId) external;
}

contract HeroicAgeLand is ERC721Holder, ReentrancyGuard, Ownable, Pausable {

    using SafeERC20 for IERC20;
    IHeroicAge hero;

    address public paymentToken;                // Contract address of the payment token
    uint public op1unitPrice;                      // Unit price(Wei)
    uint public op2unitPrice;                      // Unit price(Wei)
    uint private minPurchase = 1;                // Minimum NFT to buy per purchase
    address public treasure;
    uint256 public commonHeroId;
    address public nftCollection;               // NFT contract address

    mapping(uint256 => uint256) public propertyAssets;
    mapping(address => address) public userRelations;
    mapping(address => address[]) public userSubRelations;

    uint public op1MintFee;
    uint public op2MintFee;


    uint private RHeroId;
    uint private SRHeroId;

    struct HeroicAge {
        uint256 min;
        uint256 max;
        uint256 indexTokenId;
    }

    HeroicAge[] public items;

    event Mint(uint256 tokenId, address user);
    event OfferFilled(uint amount, uint totalPrice, address indexed filler, string _referralCode);

    function getUserSubRelations(address _address) public view returns (address[] memory)  {
        return userSubRelations[_address];
    }

    function setNFTCollection(address _nftCollection) external onlyOwner {
        nftCollection = _nftCollection;
    }

    function setCommonHeroId(uint256 _commonHeroId) external onlyOwner {
        commonHeroId = _commonHeroId;
    }

    function setHero(address _hero) external onlyOwner {
        hero = IHeroicAge(_hero);
    }

    function setUnitPrice(uint _unitPrice, uint _option) external onlyOwner {
        if (_option == 1) {
            op1unitPrice = _unitPrice;
        }
        if (_option == 2) {
            op2unitPrice = _unitPrice;
        }
    }


    function setTreasure(address _treasure) external onlyOwner {
        treasure = _treasure;
    }

    function bind(address _masterAddress) external nonReentrant whenNotPaused {
        if (userRelations[msg.sender] == address(0)) {
            userRelations[msg.sender] = _masterAddress;
            userSubRelations[_masterAddress].push(msg.sender);
        }
    }

    function mintWithReferralWithReferral(uint _amount, string memory _referralCode) external nonReentrant whenNotPaused returns (uint256[] memory){
        require(!isContract(msg.sender), "stakeSR: Not support contract address");
        require(_amount >= minPurchase, "Amount must >= minPurchase");
        uint totalPrice = op1unitPrice * _amount;
        IERC20(paymentToken).safeTransferFrom(msg.sender, treasure, totalPrice);
        uint256[] memory nftTokens = new uint256[](_amount);
        for (uint i = 0; i < _amount; i ++) {
            uint256 nftToken = _safeMintCommonHero();
            //            nftTokens.push(nftToken);
            nftTokens[i] = nftToken;

        }
        emit OfferFilled(_amount, totalPrice, msg.sender, _referralCode);
        return nftTokens;
    }

    function _safeMintCommonHero() internal returns (uint256){
        commonHeroId++;
        hero.customizeMint(msg.sender, commonHeroId);
        return commonHeroId;
    }

    function mintLotteryWithReferral(uint _amount, string memory _referralCode) external nonReentrant whenNotPaused returns (uint256[] memory){
        require(!isContract(msg.sender), "stakeSR: Not support contract address");
        require(_amount >= minPurchase, "Amount must >= minPurchase");
        uint totalPrice = op2unitPrice * _amount;
        IERC20(paymentToken).safeTransferFrom(msg.sender, treasure, totalPrice);
        //chainlink得到salt
        uint salt = 123456789;
        uint256[] memory nftTokens = new uint256[](_amount);
        for (uint i = 0; i < _amount; i ++) {
            uint random = rnd1(salt + i, 10000);
            uint256 nftToken = _safeMint(random);
            nftTokens[i] = nftToken;
        }
        emit OfferFilled(_amount, totalPrice, msg.sender, _referralCode);
        return nftTokens;
    }


    function bindPropertyAssert(uint256 _property, uint256 _startNum) external onlyOwner {
        propertyAssets[_property] = _startNum;

    }

    function createRequest(uint256 _min, uint256 _max, uint256 _indexTokenId) external onlyOwner {
        HeroicAge memory newRequest = HeroicAge({
        min : _min,
        max : _max,
        indexTokenId : _indexTokenId
        });
        items.push(newRequest);
    }

    function rnd1(uint256 salt, uint256 upperLimit)
    internal
    view
    returns (uint256 r1)
    {
        uint256 r = uint256(
            keccak256(
                abi.encodePacked(
                    block.timestamp,
                    msg.sender,
                    salt,
                    msg.sender.balance
                )
            )
        );
        r1 = uint256(r % upperLimit);
    }

    function _safeMint(uint256 randomNum) internal returns (uint256) {

        uint256 nftToken = 0;
        uint arrayLength = items.length;
        for (uint i = 0; i < arrayLength; i++) {
            if (randomNum >= items[i].min && randomNum <= items[i].max) {
                items[i].indexTokenId = items[i].indexTokenId + 1;
                nftToken = items[i].indexTokenId;
            }
        }
        hero.customizeMint(msg.sender, nftToken);
        emit Mint(nftToken, msg.sender);
        return nftToken;
    }


    function setPaymentToken(address _paymentToken) external onlyOwner {
        paymentToken = _paymentToken;
    }

    /* ========== MUTATIVE FUNCTIONS ========== */

    function setMintFee(uint256 _mintFee, uint256 option) external onlyOwner {
        if (option == 1) {
            op1MintFee = _mintFee;
        }
        if (option == 2) {
            op2MintFee = _mintFee;
        }
    }

    /// @notice Stakes user's NFTs
    /// @param tokenIds The tokenIds of the NFTs which will be staked
    function stakeSR(uint256[] memory tokenIds) external nonReentrant whenNotPaused returns (uint256){
        require(!isContract(msg.sender), "stakeSR: Not support contract address");
        require(tokenIds.length == 7, "Staking: need enough tokenIds provided");
        uint256 cardNO1 = tokenIds[0] / (10 ** 10);
        uint256 cardNO2 = tokenIds[1] / (10 ** 10);
        uint256 cardNO3 = tokenIds[2] / (10 ** 10);
        uint256 cardNO4 = tokenIds[3] / (10 ** 10);
        uint256 cardNO5 = tokenIds[4] / (10 ** 10);
        uint256 cardNO6 = tokenIds[5] / (10 ** 10);
        uint256 cardNO7 = tokenIds[6] / (10 ** 10);
        require((cardNO1 == cardNO2) && (cardNO1 == cardNO3) && (cardNO1 == cardNO4) && (cardNO1 == cardNO5) && (cardNO1 == cardNO6) && (cardNO1 == cardNO7), "Staking: same property");
        require(cardNO1 >= 21 && cardNO1 <= 25, "Staking: need  R card");

        SRHeroId = cardNO1;

        for (uint256 i = 0; i < tokenIds.length; i += 1) {
            // Transfer user's NFTs to the staking contract
            IERC721(nftCollection).transferFrom(msg.sender, address(this), tokenIds[i]);
        }

        //erc20 transfer mint fee to treasure address
        IERC20(paymentToken).safeTransferFrom(msg.sender, treasure, op2MintFee);
        //mint
        uint256 randNum = propertyAssets[SRHeroId];
        uint256 nftToken = _safeMint(randNum);
        return nftToken;
    }


    /// @notice Stakes user's NFTs
    /// @param tokenIds The tokenIds of the NFTs which will be staked
    function stakeR(uint256[] memory tokenIds) external nonReentrant whenNotPaused returns (uint256){
        require(!isContract(msg.sender), "stakeR: Not support contract address");
        require(tokenIds.length == 12, "Staking: need enough tokenIds provided");
        uint256 cardNO1 = tokenIds[0] / (10 ** 10);
        uint256 cardNO2 = tokenIds[1] / (10 ** 10);
        uint256 cardNO3 = tokenIds[2] / (10 ** 10);
        uint256 cardNO4 = tokenIds[3] / (10 ** 10);
        uint256 cardNO5 = tokenIds[4] / (10 ** 10);
        uint256 cardNO6 = tokenIds[5] / (10 ** 10);
        uint256 cardNO7 = tokenIds[6] / (10 ** 10);
        uint256 cardNO8 = tokenIds[7] / (10 ** 10);
        uint256 cardNO9 = tokenIds[8] / (10 ** 10);
        uint256 cardNO10 = tokenIds[9] / (10 ** 10);
        uint256 cardNO11 = tokenIds[10] / (10 ** 10);
        uint256 cardNO12 = tokenIds[11] / (10 ** 10);
        require((cardNO1 == cardNO2) && (cardNO1 == cardNO3) && (cardNO1 == cardNO4) && (cardNO1 == cardNO5) && (cardNO1 == cardNO6) && (cardNO1 == cardNO7) && (cardNO1 == cardNO8) && (cardNO1 == cardNO9) && (cardNO1 == cardNO10) && (cardNO1 == cardNO11) && (cardNO1 == cardNO12), "Staking: same property");
        require(cardNO1 >= 31 && cardNO1 <= 35, "Staking: need  R card");
        RHeroId = cardNO1;
        uint256[] memory assets = tokenIds;
        for (uint256 i = 0; i < assets.length; i += 1) {
            // Transfer user's NFTs to the staking contract
            IERC721(nftCollection).transferFrom(msg.sender, address(this), assets[i]);
        }

        IERC20(paymentToken).safeTransferFrom(msg.sender, treasure, op1MintFee);
        uint256 randNum = propertyAssets[RHeroId];
        uint256 nftToken = _safeMint(randNum);
        return nftToken;
    }

    function isContract(address _address) internal view returns (bool) {
        uint256 size;
        assembly {size := extcodesize(_address)}
        return size > 0;
    }

    // Fallback: reverts if Ether is sent to this smart-contract by mistake
    fallback() external {
        revert();
    }
}

