import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/ReentrancyGuard.sol";

import "@uniswap/v2-core/contracts/interfaces/IUniswapV2Factory.sol";
import "@uniswap/v2-core/contracts/interfaces/IUniswapV2Pair.sol";


import "../../apis/uniswap/IUniswapV2Router02.sol";
import "../../interfaces/IStrategy.sol";
import "../../interfaces/IWorker.sol";
import "../../interfaces/IFeeSharingSystem.sol";
import "../../../utils/LooksMath.sol";
import "../../../utils/SafeToken.sol";

contract LooksWorker is Ownable, ReentrancyGuard, IWorker {
  /// @notice Libraries
  using SafeToken for address;
  using SafeMath for uint256;

  /// @notice Events
  event Reinvest(address indexed caller, uint256 reward, uint256 bounty);
  event AddShare(uint256 indexed id, uint256 share);
  event RemoveShare(uint256 indexed id, uint256 share);
  event Liquidate(uint256 indexed id, uint256 wad);

  struct Shares {
    uint256 depositAmount;
    uint256 feeShares;
  }

  /// @notice Configuration variables
  IFeeSharingSystem public feeSharingSystem;
  IUniswapV2Factory public factory;
  IUniswapV2Router02 public router;
  IUniswapV2Pair public override lpToken;
  address public wNative;
  address public override baseToken;
  address public override farmingToken;
  address public rewardToken;
  address public operator;

  /// @notice Mutable state variables
  mapping(uint256 => Shares) public shares;
  mapping(address => bool) public okStrats;
  uint256 public totalShare;
  IStrategy public addStrat;
  IStrategy public liqStrat;
  uint256 public reinvestBountyBps;
  uint256 public maxReinvestBountyBps;
  mapping(address => bool) public okReinvestors;

  /// @notice Configuration varaibles for V2
  uint256 public fee;
  uint256 public feeDenom;

  constructor(
    address _operator,
    address _baseToken,
    IFeeSharingSystem _feeSharingSystem,
    IUniswapV2Router02 _router,
    address _token0,
    address _token1,
    IStrategy _addStrat,
    IStrategy _liqStrat,
    uint256 _reinvestBountyBps
  ) public {
    operator = _operator;
    baseToken = _baseToken;
    wNative = _router.WETH();
    feeSharingSystem = _feeSharingSystem;
    router = _router;
    factory = IUniswapV2Factory(_router.factory());
    // Get lpToken and farmingToken from UniswapV2Factory pool 
    lpToken = IUniswapV2Pair(factory.getPair(_token0, _token1));
    address token0 = lpToken.token0();
    address token1 = lpToken.token1();
    farmingToken = token0 == baseToken ? token1 : token0;
    rewardToken = address(feeSharingSystem.rewardToken());
    addStrat = _addStrat;
    liqStrat = _liqStrat;
    okStrats[address(addStrat)] = true;
    okStrats[address(liqStrat)] = true;
    reinvestBountyBps = _reinvestBountyBps;
    maxReinvestBountyBps = 500;
    fee = 997;
    feeDenom = 1000;

    require(
      reinvestBountyBps <= maxReinvestBountyBps,
      "Worker::initialize:: reinvestBountyBps exceeded maxReinvestBountyBps"
    );
    require(
      (farmingToken == lpToken.token0() || farmingToken == lpToken.token1()) &&
        (baseToken == lpToken.token0() || baseToken == lpToken.token1()),
      "Worker::initialize:: not match with farm & base token"
    );
  }

  /// @dev Require that the caller must be an EOA account to avoid flash loans.
  modifier onlyEOA() {
    require(msg.sender == tx.origin, "Worker::onlyEOA:: not eoa");
    _;
  }

  /// @dev Require that the caller must be the operator.
  modifier onlyOperator() {
    require(msg.sender == operator, "Worker::onlyOperator:: not operator");
    _;
  }

  //// @dev Require that the caller must be ok reinvestor.
  modifier onlyReinvestor() {
    require(okReinvestors[msg.sender], "Worker::onlyReinvestor:: not reinvestor");
    _;
  }

  /// @dev Re-invest whatever this worker has earned back to staked LOOKS tokens.
  function reinvest() external override onlyEOA onlyReinvestor nonReentrant {
    // 1. Approve tokens
    address(farmingToken).safeApprove(address(feeSharingSystem), uint256(-1));
    // 2. Withdraw all the rewards.
    feeSharingSystem.harvest();
    uint256 reward = rewardToken.balanceOf(address(this));
    if (reward == 0) return;
    // 3. Send the reward bounty to the caller.
    uint256 bounty = reward.mul(reinvestBountyBps) / 10000;
    if (bounty > 0) rewardToken.safeTransfer(msg.sender, bounty);
    // 4. Use add Token strategy to convert all BaseToken to LOOKS tokens.
    baseToken.safeTransfer(address(addStrat), baseToken.myBalance());
    addStrat.execute(address(0), 0, abi.encode(0));
    // 5. Mint more LOOKS tokens and stake them for more rewards.
    feeSharingSystem.deposit(farmingToken.myBalance(), false);
    // 6. Reset approve
    address(farmingToken).safeApprove(address(feeSharingSystem), 0);
    emit Reinvest(msg.sender, reward, bounty);
  }

  /// @dev Work on the given position. Must be called by the operator.
  /// @param id The position ID to work on.
  /// @param user The original user that is interacting with the operator.
  /// @param debt The amount of user debt to help the strategy make decisions.
  /// @param data The encoded data, consisting of strategy address and calldata.
  function work(
    uint256 id,
    address user,
    uint256 debt,
    bytes calldata data
  ) external override onlyOperator nonReentrant {
    // 1. Convert this position back to LOOKS tokens.
    _removeShare(id);
    // 2. Perform the worker strategy; sending LOOKS tokens + BaseToken; expecting LOOKS tokens + BaseToken.
    (address strat, bytes memory ext) = abi.decode(data, (address, bytes));
    require(okStrats[strat], "Worker::work:: unapproved work strategy");
    farmingToken.safeTransfer(strat, farmingToken.myBalance());
    baseToken.safeTransfer(strat, baseToken.myBalance());
    IStrategy(strat).execute(user, debt, ext);
    // 3. Add LOOKS tokens back to the farming pool.
    _addShare(id);
    // 4. Return any remaining BaseToken back to the operator.
    baseToken.safeTransfer(msg.sender, baseToken.myBalance());
  }

  /// @dev Return the amount of BaseToken to receive if we are to liquidate the given position.
  /// @param id The position ID to perform health check.
  function health(uint256 id) external view override returns (uint256) {
    // 1. Convert all FarmingToken to BaseToken and return total BaseToken.
    address[] memory path = new address[](2);
    path[0] = address(farmingToken);
    path[1] = address(baseToken);
    Shares storage _shares = shares[id];
    uint256 farmingTokenBalance = _shares.depositAmount;
    uint[] memory amounts = router.getAmountsOut(farmingTokenBalance, path);
    return amounts[amounts.length - 1];
  }

  /// @dev Liquidate the given position by converting it to BaseToken and return back to caller.
  /// @param id The position ID to perform liquidation
  function liquidate(uint256 id) external override onlyOperator nonReentrant {
    // 1. Convert the position back to LOOKS tokens and use liquidate strategy.
    _removeShare(id);
    farmingToken.safeTransfer(address(liqStrat), farmingToken.myBalance());
    liqStrat.execute(address(0), 0, abi.encode(0));
    // 2. Return all available BaseToken back to the operator.
    uint256 wad = baseToken.myBalance();
    baseToken.safeTransfer(msg.sender, wad);
    emit Liquidate(id, wad);
  }

  function getShares() internal returns (uint256 _shares) {
    (_shares , , ) = feeSharingSystem.userInfo(address(this));
  }

  /// @dev Internal function to stake all outstanding LOOKS tokens to the given position ID.
  function _addShare(uint256 id) internal {
    uint256 balance = farmingToken.myBalance();
    if (balance > 0) {
      Shares storage _shares = shares[id];
      // 1. Approve token to be spend by feeSharingSystem
      address(farmingToken).safeApprove(address(feeSharingSystem), uint256(-1));
      uint256 _beforeShares = getShares();
      // 2. Deposit balance to FeeSharingSystem
      feeSharingSystem.deposit(balance, false);
      // 3. Update shares
      uint256 _afterShares = getShares();
      uint256 userShares = _afterShares.sub(_beforeShares);
      _shares.feeShares = _shares.feeShares.add(userShares);
      _shares.depositAmount = _shares.depositAmount.add(balance);
      totalShare = totalShare.add(userShares);
      // 4. Reset approve token
      address(farmingToken).safeApprove(address(feeSharingSystem), 0);
      emit AddShare(id, userShares);
    }
  }

  /// @dev Internal function to remove shares of the ID and convert to outstanding LOOKS tokens.
  function _removeShare(uint256 id) internal {
    Shares storage _shares = shares[id];
    if (_shares.feeShares > 0) {
      feeSharingSystem.withdraw(_shares.feeShares, false);
      totalShare = totalShare.sub(_shares.feeShares);
      _shares.feeShares = 0;
      _shares.depositAmount = 0;
      emit RemoveShare(id, _shares.feeShares);
    }
  }

  /// @dev Set the reward bounty for calling reinvest operations.
  /// @param _reinvestBountyBps The bounty value to update.
  function setReinvestBountyBps(uint256 _reinvestBountyBps) external onlyOwner {
    require(
      _reinvestBountyBps <= maxReinvestBountyBps,
      "Worker::setReinvestBountyBps:: _reinvestBountyBps exceeded maxReinvestBountyBps"
    );
    reinvestBountyBps = _reinvestBountyBps;
  }

  /// @dev Set Max reinvest reward for set upper limit reinvest bounty.
  /// @param _maxReinvestBountyBps The max reinvest bounty value to update.
  function setMaxReinvestBountyBps(uint256 _maxReinvestBountyBps) external onlyOwner {
    require(
      _maxReinvestBountyBps >= reinvestBountyBps,
      "Worker::setMaxReinvestBountyBps:: _maxReinvestBountyBps lower than reinvestBountyBps"
    );
    maxReinvestBountyBps = _maxReinvestBountyBps;
  }

  /// @dev Set the given strategies' approval status.
  /// @param strats The strategy addresses.
  /// @param isOk Whether to approve or unapprove the given strategies.
  function setStrategyOk(address[] calldata strats, bool isOk) external override onlyOwner {
    uint256 len = strats.length;
    for (uint256 idx = 0; idx < len; idx++) {
      okStrats[strats[idx]] = isOk;
    }
  }

  /// @dev Set the given address's to be reinvestor.
  /// @param reinvestors The reinvest bot addresses.
  /// @param isOk Whether to approve or unapprove the given strategies.
  function setReinvestorOk(address[] calldata reinvestors, bool isOk) external override onlyOwner {
    uint256 len = reinvestors.length;
    for (uint256 idx = 0; idx < len; idx++) {
      okReinvestors[reinvestors[idx]] = isOk;
    }
  }

  /// @dev Update critical strategy smart contracts. EMERGENCY ONLY. Bad strategies can steal funds.
  /// @param _addStrat The new add strategy contract.
  /// @param _liqStrat The new liquidate strategy contract.
  function setCriticalStrategies(IStrategy _addStrat, IStrategy _liqStrat) external onlyOwner {
    addStrat = _addStrat;
    liqStrat = _liqStrat;
  }
}

