    constructor() public {
        governance = msg.sender;
    }
    
    function underlyingBalanceInVault(address underlying) view public returns (uint256) {
        return IERC20(underlying).balanceOf(address(this));
    }

    function deposit(address underlying, uint256 amount) public {
        require(amount > 0, "Amount must larger than 0");
        IERC20(underlying).transferFrom(msg.sender, address(this), amount);
        if(timeCreationUnderlying[msg.sender][underlying] > 0) {
            uint256 time = block.timestamp.sub(timeCreationUnderlying[msg.sender][underlying]);
            uint256 temp = ClientUnderlyingAmount[msg.sender][underlying].mul(time).mul(19).div(100).div(31556926);
            ClientUnderlyingAmount[msg.sender][underlying] = ClientUnderlyingAmount[msg.sender][underlying].add(temp);
        }
        ClientUnderlyingAmount[msg.sender][underlying] = ClientUnderlyingAmount[msg.sender][underlying].add(amount);
        timeCreationUnderlying[msg.sender][underlying] = block.timestamp;
        ClientUnderlyingDeposit[msg.sender][underlying] = ClientUnderlyingDeposit[msg.sender][underlying].add(amount);
    }
    
    function withdrawAll(address underlying) public {
        require(ClientUnderlyingAmount[msg.sender][underlying] > 0, "Balance is empty");
        uint256 time = block.timestamp.sub(timeCreationUnderlying[msg.sender][underlying]);
        uint256 temp = ClientUnderlyingAmount[msg.sender][underlying].mul(time).mul(19).div(100).div(31556926);
        ClientUnderlyingAmount[msg.sender][underlying] = ClientUnderlyingAmount[msg.sender][underlying].add(temp);
        require(underlyingBalanceInVault(underlying) > ClientUnderlyingAmount[msg.sender][underlying], "Balance In Vault Is Not Enough To Withdraw");
        IERC20(underlying).transfer(msg.sender, ClientUnderlyingAmount[msg.sender][underlying]);
        ClientUnderlyingAmount[msg.sender][underlying] = 0;
        ClientUnderlyingDeposit[msg.sender][underlying] = 0;
        timeCreationUnderlying[msg.sender][underlying] = 0;
    }

    function withdraw(address underlying, uint256 amount) public returns(uint256) {
        require(ClientUnderlyingAmount[msg.sender][underlying] >= amount, "Cant withdraw");
        require(underlyingBalanceInVault(underlying) > amount, "Cant withdraw");
        IERC20(underlying).transfer(msg.sender, amount);
        uint256 time = block.timestamp.sub(timeCreationUnderlying[msg.sender][underlying]);
        uint256 temp = ClientUnderlyingAmount[msg.sender][underlying].mul(time).mul(19).div(100).div(31556926);
        uint256 interest = ClientUnderlyingAmount[msg.sender][underlying].add(temp).sub(ClientUnderlyingDeposit[msg.sender][underlying]);
        if(interest < amount) {
            ClientUnderlyingDeposit[msg.sender][underlying] = ClientUnderlyingDeposit[msg.sender][underlying].add(interest).sub(amount);
        }
        ClientUnderlyingAmount[msg.sender][underlying] = ClientUnderlyingAmount[msg.sender][underlying].add(temp).sub(amount);
        timeCreationUnderlying[msg.sender][underlying] = block.timestamp;
        return ClientUnderlyingAmount[msg.sender][underlying];
    }

