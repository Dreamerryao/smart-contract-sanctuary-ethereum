    IERC721Metadata,
    ERC721,
    IMirrorEarlyAdopterToken
{
    address public immutable override l2TokenBridge;

    uint256 public immutable override closeTimestamp;

    string public constant override name = "Mirror Early Adopter Token";

    string public constant override symbol = "EARLY";

    uint256 public totalSupply = 0;

    modifier open() {
        require(block.timestamp <= closeTimestamp, "minting closed");
        _;
    }

