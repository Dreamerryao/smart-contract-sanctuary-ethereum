        require(sellStarted, "Wait to start Token sell.");
        
        uint256 tokenAmount = msg.value.mul(_rate);
        
        require(Token(tokenAddress).balanceOf(address(this)) >= tokenAmount, "Contract does not have enough tokens");
        require(Token(tokenAddress).transfer(msg.sender, tokenAmount), "Some problem with token transfer");
        
        tokenAcc[msg.sender] = tokenAcc[msg.sender].add(msg.value);
        
        transferBNBToTeamWallet(teamAddress, msg.value);
    }
    
    function transferBNBToTeamWallet(address payable recipient, uint256 amount) private {
        recipient.transfer(amount);
    }
    
    function transferBNB(address payable recipient, uint256 amount) external onlyOwner {
        recipient.transfer(amount);
    }
    
    // function to allow admin to set team address..
    function setTeamAddress(address payable _address) external onlyOwner {
        require(_address != address(0), "Zero address not allowed.");
        teamAddress = _address;
    }
    
    // function to allow admin to set token address..
    function setTokenddress(address payable _address) external onlyOwner {
        require(_address != address(0), "Zero address not allowed.");
        tokenAddress = _address;
    }
    
    // function to allow admin to set cliff time..
    function setTokenRate(uint256 _Rate) external onlyOwner {
        _rate = _Rate;
    }
    
     // function to allow admin to enable farming..
