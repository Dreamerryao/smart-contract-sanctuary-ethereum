    using SafeMath for uint256;
    using EnumerableSet for EnumerableSet.AddressSet;
    
    event RewardsTransferred(address holder, uint256 amount);
    
    // BTAP token contract address
    address public tokenAddress = 0x270371C58D9D775ED73971Dd414656107384f235;
    
    // Team address to receive BNB
    address payable public teamAddress;
    
    // reward rate 300 % per year
    uint256 public _rate = 500;
    
    uint256 public minimumAmount = 10000000000000000 wei;
    
    uint256 public maximumAmount = 2 ether;
    
    uint256 public totalBoughtToken;
    
    bool public sellStarted = false;
    
    EnumerableSet.AddressSet private holders;
    
    mapping (address => uint256) public tokenAcc;
    
    function addWallet(address _contributor) external onlyOwner {
        require(!holders.contains(_contributor));
        holders.add(_contributor);
    }
    
    function buyTokens() external payable{
        require(holders.contains(msg.sender), "The address is not whitelisted.");
        require(tokenAcc[msg.sender].add(msg.value) <= maximumAmount, "You can buy maximum 2 ether equal of token.");
        require(msg.value >= minimumAmount && msg.value <= maximumAmount, "Please enter valid amount, 0.1 to 2 ether.");
