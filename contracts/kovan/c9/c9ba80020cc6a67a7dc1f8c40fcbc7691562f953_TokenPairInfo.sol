    function swapExactTokensForTokens(
        uint256,
        uint256,
        address[] calldata,
        address,
        uint256
    ) external;

    function getAmountsOut(uint256 amountIn, address[] memory path)
        external
        view
        returns (uint256[] memory amounts);

    function getAmountsIn(uint amountOut, address[] calldata path) 
        external 
        view 
        returns (uint[] memory amounts);
}


contract TokenPairInfo {
    using SafeMath for uint256;

    //获取LP存量信息
    function getLPReserves(address lp) public view returns (uint256,uint256) {
        (uint256 reserve0, uint256 reserve1, ) = IPHOswapV2Pair(lp).getReserves();
        return (reserve0 ,reserve1);
    }

    //获取LPToken
    function getLPTokens(address lp) public view returns (address,address) {
        address token0 = IPHOswapV2Pair(lp).token0();
        address token1 = IPHOswapV2Pair(lp).token1();
        return (token0 ,token1);
    }
    
    //获取兑换数量
    function getTokenOut(address uniRouter,address tokenIn,address tokenOut) public view returns (uint256) {
        uint256 amountIn = 10**uint256(IERC20(tokenIn).decimals());
        address[] memory path = new address[](2);
        path[0] = tokenIn;
        path[1] = tokenOut;
        uint256[] memory amounts;
        amounts = IRouter(uniRouter).getAmountsOut(amountIn, path);
        return amounts[1];
    }

    //获取Token0价格  
    function getToken0Price(address lp,uint8 t0Decimal,uint8 t1Decimal) public view returns (uint256) {
        (uint256 reserve0, uint256 reserve1, ) =IPHOswapV2Pair(lp).getReserves();
        uint256 totalDecimal=t0Decimal+t1Decimal;
        return (reserve0 * 10**totalDecimal) / reserve1;
    }

    //获取LP价格（传入价格乘以10的18次方）
    function LPPrice(address lp,uint256 token0Price,uint256 token1Price) public view returns (uint256) {
        (uint256 reserve0, uint256 reserve1, ) = IPHOswapV2Pair(lp).getReserves();
        uint256 lpPrice=(token0Price.mul(reserve0)+token1Price.mul(reserve1)).div(IPHOswapV2Pair(lp).totalSupply());
        return lpPrice;
    }
}