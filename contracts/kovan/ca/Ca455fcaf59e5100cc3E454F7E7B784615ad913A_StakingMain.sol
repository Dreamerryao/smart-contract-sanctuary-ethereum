pragma solidity 0.6.12;
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC777/IERC777Recipient.sol";
import "@openzeppelin/contracts/introspection/IERC1820Registry.sol";
import "@openzeppelin/contracts/token/ERC20/SafeERC20.sol";
import "./StakingProfit.sol";
import "@openzeppelin/contracts/cryptography/ECDSA.sol";

contract StakingMain is Ownable, ReentrancyGuard, IERC777Recipient {
    using SafeERC20 for IERC20;
    using SafeMath for uint256;
    IERC1820Registry private constant _erc1820 =
        IERC1820Registry(0x1820a4B7618BdE71Dce8cdc73aAB6C95905faD24);
    bytes32 private constant TOKENS_RECIPIENT_INTERFACE_HASH =
        0xb281fc8c12954d22544db45de3159a39272895b169a852b314f9cc762e44c53b;
    address signer;
    enum Status {
        IN,
        OUT
    }
    struct Order {
        address user;
        uint256 amount;
        uint256 startAt;
        uint8 day;
        Status status;
    }
    Order[] public orders;
    mapping(address => uint256) public userBalance;
    address public CLH;
    address public profitContract;

    event Deposit(address user, uint256 amount, uint8 day, uint256 id);
    event Withdraw(address user, uint256[] ids, uint256 amount, uint256 profit);

    constructor(address clh, address _signer) public {
        CLH = clh;
        signer = _signer;
        _erc1820.setInterfaceImplementer(
            address(this),
            TOKENS_RECIPIENT_INTERFACE_HASH,
            address(this)
        );
        profitContract = address(new StakingProfit(clh));
    }

    function deposit(uint256 amount, uint8 day) external {
        IERC20(CLH).safeTransferFrom(msg.sender, address(this), amount);
        _deposit(msg.sender, amount, day);
    }

    function _deposit(
        address user,
        uint256 amount,
        uint8 day
    ) internal nonReentrant {
        require(day == 90 || day == 180 || day == 360, "day error");
        userBalance[user] = userBalance[user].add(amount);
        uint256 startAt = now;
        startAt = startAt - (startAt % 1 days) + 1 days;
        orders.push(
            Order({
                user: user,
                amount: amount,
                startAt: startAt,
                day: day,
                status: Status.IN
            })
        );
        emit Deposit(user, amount, day, orders.length - 1);
    }

    function withdraw(
        uint256[] calldata ids,
        uint256 profit,
        bytes calldata signature
    ) external nonReentrant {
        bytes32 hash = keccak256(abi.encode(ids, profit));
        require(
            profit == 0 || signer == ECDSA.recover(hash, signature),
            "signer error"
        );
        uint256 amount;
        uint256 _now = now;
        for (uint8 i = 0; i < ids.length; i++) {
            Order storage _order = orders[ids[i]];
            require(_order.user == msg.sender, "owner error");
            require(_order.status == Status.IN, "owner error");
            require(
                _now > (_order.startAt + _order.day * 1 days),
                "owner error"
            );
            _order.status = Status.OUT;
            amount = amount.add(_order.amount);
        }
        userBalance[msg.sender] = userBalance[msg.sender].sub(amount);
        IERC20(CLH).transfer(msg.sender, amount);
        IERC20(CLH).transferFrom(profitContract, msg.sender, profit);
        emit Withdraw(msg.sender, ids, amount, profit);
    }

    function tokensReceived(
        address,
        address from,
        address,
        uint256 amount,
        bytes calldata userData,
        bytes calldata
    ) external override {
        require(msg.sender == CLH, "token error");
        uint8 day = abi.decode(userData, (uint8));
        _deposit(from, amount, day);
    }

    function setSigner(address _signer) external onlyOwner {
        require(_signer != signer, "repeat");
        signer = _signer;
    }

    function orderLength() external view returns (uint256) {
        return orders.length;
    }
}

