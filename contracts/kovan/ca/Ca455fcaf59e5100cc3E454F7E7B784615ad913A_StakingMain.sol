pragma solidity 0.6.12;
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

interface IMain {
    function owner() external returns (address);
}

contract StakingProfit {
    address main;

    constructor(address clh) public {
        IERC20(clh).approve(msg.sender, ~uint256(0));
        main = msg.sender;
    }

    function withdraw(
        address token,
        address to,
        uint256 amount
    ) external {
        require(msg.sender == IMain(main).owner(), "not owner");
        IERC20(token).transfer(to, amount);
    }
}

