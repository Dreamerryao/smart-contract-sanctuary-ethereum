pragma solidity ^0.8.9;

import "@openzeppelin/contracts/token/ERC721/extensions/IERC721Enumerable.sol";
import "./interface/ITurboNft.sol";

contract TurboNftMinter {

    IERC721Enumerable public lobsterNfts;
    ITurboNft public turboNft;
    mapping (uint => bool) public claimedTokenIds;


    constructor (address _lobsterNfts, address _turboNft) public {
        lobsterNfts = IERC721Enumerable(_lobsterNfts);
        turboNft = ITurboNft(_turboNft);

    }

    // claim by address
    function claim () external {
        address sender = msg.sender;
        uint256 tokensCount = lobsterNfts.balanceOf(sender);
        require (tokensCount > 0, "Mint: no tokens");
        uint256[] memory tokenIds;
        for (uint256 i; i<tokensCount; i++) {
            tokenIds[i] = lobsterNfts.tokenOfOwnerByIndex(sender, i);
        }
        _claim(tokenIds, sender);
    }


    function claim (uint256[] calldata tokenIds) external {
        _claim(tokenIds, msg.sender);
    }

    function _claim (uint256[] memory tokenIds, address sender) internal {
        uint256 length = tokenIds.length;
        require (length > 0, "Mint: no tokens");
        uint mintedTokensCount;
        for (uint i; i<length; i++) {
            require (lobsterNfts.ownerOf(tokenIds[i]) == sender, "Mint: Invalid Token Owner");
            if (claimedTokenIds[tokenIds[i]] == false) {
                claimedTokenIds[tokenIds[i]] = true;
                mintedTokensCount++;
            }
        }
        require (mintedTokensCount > 0, "Mint: No tokens to mint");
        turboNft.mintMultiple(sender, mintedTokensCount);
    }


}

