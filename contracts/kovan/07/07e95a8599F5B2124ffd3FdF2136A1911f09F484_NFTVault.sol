contract NFTVault {
    using SafeMath for uint256;
    using Address for address;

    IERC1155 nft;
    mapping(address => mapping(uint256 => bool)) deposits;

    function setNFT(address nftAddress) public {
        nft = IERC1155(nftAddress);
    }

    function lockNFT(uint256 id) public {
        require(deposits[msg.sender][id] == false);
        deposits[msg.sender][id] = true;
        nft.safeTransferFrom(msg.sender, address(this), id, 1, "");
    }

    function unlockNFT(uint256 id) public {
        require(deposits[msg.sender][id] == true);
        deposits[msg.sender][id] = true;
        nft.safeTransferFrom(address(this), msg.sender, id, 1, "");
    }
}