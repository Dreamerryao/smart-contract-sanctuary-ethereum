import "./interfaces/IUniswapV2Router02.sol";
import "./interfaces/IERC20.sol";
import "./types/Ownable.sol";

contract MinerTokenBuyer is Ownable {
    IUniswapV2Router02 public router;
    address public miner;

    constructor(address _router, address _miner) {
        router = IUniswapV2Router02(_router);
        miner = _miner;
    }

    function buyMinerTokens(address _srcToken, uint256 _amnt) public returns (uint256[] memory) {
        require(_srcToken != address(0), "Invalid Source Token Address.");
        require(_amnt > 0, "Invalid Amount.");

        address[] memory path = new address[](2);
        path[0] = address(_srcToken);
        path[1] = address(miner);

        // Swap any src token amount
        IERC20(_srcToken).transferFrom(msg.sender, address(this), _amnt);
        IERC20(_srcToken).approve(address(router), _amnt);

        uint256[] memory amounts = router.swapExactTokensForTokens(_amnt, 0, path, msg.sender, block.timestamp + 120);

        return amounts;
    }

    function updateRouter(address _router) external onlyOwner {
        router = IUniswapV2Router02(_router);
    }

    function updateMiner(address _miner) external onlyOwner {
        miner = _miner;
    }
}

