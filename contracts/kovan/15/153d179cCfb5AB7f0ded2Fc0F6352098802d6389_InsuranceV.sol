contract InsuranceV  {
    using SafeMath for uint256;

    address public governance;
    IMCRCompute public mcrCompute;
    IERC20 public token;
    uint256 public total;
    uint256 public delay = 2 days;
    uint256 public interval = 14 days;
    uint256 public mcr = 0;

    struct Info {
        address token;
        uint256 allocPoint;
        uint256 amount;
        uint256 multiple;
        uint256 price;
        uint256 pay;
        uint256 totalPay;
    }

    Info[] public infos;

    struct Policy {
        address owner;
        uint256 infoID;
        uint256 amount;
        uint256 pay;
        uint256 beginTime;
        uint256 endTime;
        uint256 state;
    }

    mapping(address => uint256) public depositAt;
    mapping(uint256 => Policy) public policys;
    uint256 public nextPolicyID = 1;

    constructor(address _mcrCompute, address _token, string memory _name, string memory _symbol)  {
        governance = msg.sender;
        mcrCompute = IMCRCompute(_mcrCompute);
        token = IERC20(_token);
    }

    function addPool(address _token, uint256 _allocPoint, uint256 _multiple, uint256 _price, uint256 _pay) external {
        infos.push(
              Info({
                  token: _token,
                  allocPoint: _allocPoint,
                  amount: 0,
                  multiple: _multiple,
                  price: _price,
                  pay: _pay,
                  totalPay: 0
              })
       );
    }
}