contract Faucet is ReentrancyGuard {
    address public mainOwner;
    uint256  public tokenAmount = 1 ether;
    uint256  public waitTime =  6 hours;
    IERC20 public tokenInstance;
    
    mapping(address => uint256) lastAccessTime;
    
    modifier onlyOwner() {
        require(mainOwner == msg.sender, 'You are not owner');
        _;
    }

    constructor(address _tokenInstance) public {
        require(_tokenInstance != address(0));
        tokenInstance = IERC20(_tokenInstance);
        mainOwner = msg.sender;
    }

    function transferOwnership(address _mainOwner) public onlyOwner {
