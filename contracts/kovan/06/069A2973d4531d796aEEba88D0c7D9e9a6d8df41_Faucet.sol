    }

    function updateFaucet(IERC20 _tokenInstance, uint256 _tokenAmount, uint256 _waitTime) public onlyOwner {
        tokenInstance = _tokenInstance;
        tokenAmount =  _tokenAmount;
        waitTime = _waitTime;
    }

    function  requestTokens() external nonReentrant {
        require(allowedToWithdraw(msg.sender),'You already ate!');
        tokenInstance.transfer(address(msg.sender), tokenAmount);
        lastAccessTime[msg.sender] = block.timestamp + waitTime;
    }

    function allowedToWithdraw(address _address) public view returns (bool) {
        if(lastAccessTime[_address] == 0) {
            return true;
        } else if(block.timestamp >= lastAccessTime[_address]) {
            return true;
        }
        return false;
    }
