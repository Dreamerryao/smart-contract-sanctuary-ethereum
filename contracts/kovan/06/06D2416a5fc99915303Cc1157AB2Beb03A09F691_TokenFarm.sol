// Hey we do not need to make this farm contract a token itself!
// contract TokenFarm is Ownable, ERC20 {
contract TokenFarm is Ownable {
    // stakeTokens: transfer token from the user account to our protocol account. done
    // unStakeTokens
    // issueTokens: transfer dappToken in exchange for the tokens user staked. done
    // addAllowedTokens: which tokens can be staked. done
    // getValue: get the price value of the tokens user staked. done

    // address public dappToken;
    // NO! dappToken is an ERC20 token! what we really need is the token contract
    // Not just the token address!!!
    IERC20 dappToken;

    // AggregatorV3Interface internal priceFeed;
    // It turns out we do not need this as a global variable because
    // we are not using it elsewhere other then the getTokenValue function!

    // deposit 100 ETH 1:1 for every 1ETH we give 1 DappToken
    // 50 ETH and 50 DAI staked, we want to give a reward of 1 DAPP / 1 DAI
    // Then we need to convert ETH to DAI to calculate how much reward token to issue

    // address public owner;
    address[] public allowedTokens;
    address[] public stakers;

    // mapping to track how much of the tokens each user has sent us
    // mapping(address => uint256) public tokenToAmount;
    // but this is not enough, we do also want to track the individual staker address
    // mapping(token address => staker address => amount)
    // this is a nested mapping!
    mapping(address => mapping(address => uint256)) public stakingBalance;
    // we cannot loop through the mapping, so we need a list of stakers
    // mapping between the user and the number of unique tokens he staked
    mapping(address => uint256) public uniqueTokenStaked;
    mapping(address => address) public tokenPriceFeedMapping;

    // We need to provide the address of the rewardToken to be issued
    constructor(address _dappTokenAddress) {
        // dappToken.address = _dappTokenAddress;
        dappToken = IERC20(_dappTokenAddress);
    }

    // we need to be able to set the price feed
    function setPriceFeedContract(address _token, address _priceFeed)
        public
        onlyOwner
    {
        tokenPriceFeedMapping[_token] = _priceFeed;
    }

    function issueToken() public onlyOwner {
        // how do we issue tokens here?
        // since we have a list of stakers, we can loop through them
        // and issue tokens to each of them
        for (uint256 i = 0; i < stakers.length; i++) {
            address recipient = stakers[i];
            uint256 userTotalValue = getUserTotalValue(recipient);
            // send them the token reward based on their total value locked
            // we have the dappToken
            // dappToken.transferFrom(address(this), recipient, ??);
            // if our tokenFarm contract will actually hold these dapp tokens we can just use transfer
            dappToken.transfer(recipient, userTotalValue);
        }
    }

    // function getUserTotalValue(address _user) public returns (uint256) {}
    // remember this is a view function!
    function getUserTotalValue(address _user) public view returns (uint256) {
        uint256 totalValue = 0;
        require(uniqueTokenStaked[_user] >= 1, "No tokens staked!");
        // now we need to loop through the allowed token list
        for (uint256 i = 0; i < allowedTokens.length; i++) {
            totalValue =
                totalValue +
                getUserSingleTokenValue(_user, allowedTokens[i]);
        }
        return totalValue;
    }

    function getUserSingleTokenValue(address _user, address _token)
        public
        view
        returns (uint256)
    // 1ETH -> $4.000
    // 200 DAI -> 200
    {
        // Why do we not use a require here?
        // because we are looping through the whole list of allowedTokens
        // if it is zero we want to keep going!
        if (uniqueTokenStaked[_user] <= 0) {
            return 0;
        }
        // we need to get the price of the token and multiply it by the staking balance
        // return getTokenValue(_token) * stakingBalance[_token][_user];
        (uint256 price, uint256 decimals) = getTokenValue(_token);
        // uint256 adjustedPrice = price * 10**(18-decimals);
        // return stakingBalance[_token][_user] * adjustedPrice;
        // this is if we want to denominate in Wei
        // if we instead want to denominate in Eth (unit)
        // 10 ETH -> this is in Wei 10*10^18
        // 1 ETH -> this is in Wei 1*10^18
        // ETH/USD = if 100USD -> 100*10^8
        return (stakingBalance[_token][_user] * price) / (10**decimals);
    }

    // https://docs.chain.link/docs/get-the-latest-price/
    function getTokenValue(address _token)
        public
        view
        returns (uint256, uint256)
    {
        // pricefeed addresses
        // each token will need its own pricefeed
        address priceFeedAddress = tokenPriceFeedMapping[_token];
        // priceFeed = AggregatorV3Interface(priceFeedAddress);
        AggregatorV3Interface priceFeed = AggregatorV3Interface(
            priceFeedAddress
        );
        (, int256 price, , , ) = priceFeed.latestRoundData();
        // IMPORTANT: we need to get the price in Wei
        // so we need to make adjustments based on decimals
        // how do we get the decimals? Check out
        // https://github.com/smartcontractkit/chainlink-brownie-contracts/blob/main/contracts/src/v0.8/interfaces/AggregatorV3Interface.sol
        // there is a decimals function!
        // uint256 decimals = priceFeed.decimals();
        // return (price, decimals);
        // NOTE: price is int256, we need to cast it to uint256!
        // priceFeed.decimals is an uint8! so we also need to cast it to uint256!
        uint256 decimals = uint256(priceFeed.decimals());
        return (uint256(price), decimals);
    }

    function stakeTokens(uint256 _amount, address _token) public {
        // how much can they stake?
        require(_amount > 0, "Amount must be more than 0");
        // what tokens can they stake?
        require(
            tokenIsAllowed(_token),
            "Token must be in the allowed token list"
        );
        // transferFrom
        // not sure if we can use owner() here
        // but it is not msg.value because the staking is not sending the tokens to us
        // otherwise this will be a payable function
        // IERC20(_token).transferFrom(msg.sender, owner(), msg.value);
        IERC20(_token).transferFrom(msg.sender, address(this), _amount);

        // one way to know whether the user is already in the list
        // is to check how many unique tokens the user has staked
        // if it is only one, then it is the first time the user is staking
        // we should add it to the list, otherwise, we do not need to add it to the list
        updateUniqueTokenStaked(msg.sender, _token);

        // stakingBalance[_token][msg.sender] = _amount;
        // NO it is not _amount, we have to consider whatever existing balance they might have
        stakingBalance[_token][msg.sender] =
            stakingBalance[_token][msg.sender] +
            _amount;
        if (uniqueTokenStaked[msg.sender] == 1) {
            stakers.push(msg.sender);
        }
        // stakers.push(msg.sender);
        // Again NO! we should check whether the user is already in the list
    }

    //modifier onlyOwner() {
    //    require(msg.sender == owner);
    //    _;
    //}

    // function unstakeTokens(uint256 _amount, address _token) public {
    function unstakeTokens(address _token) public {
        // require(_amount > 0, "Amount must be more than 0");
        // what tokens can they unstake?
        require(
            tokenIsAllowed(_token),
            "Token must be in the allowed token list"
        );

        uint256 balance = stakingBalance[_token][msg.sender];
        require(balance > 0, "no token amount staked");

        IERC20(_token).transfer(msg.sender, balance);
        stakingBalance[_token][msg.sender] = 0;
        uniqueTokenStaked[msg.sender] = uniqueTokenStaked[msg.sender] - 1;
        // we might need to remove the staker from the stakers list if they unstake all their tokens
    }

    // function updateUniqueTokenStaked(address, address) public onlyOwner {
    function updateUniqueTokenStaked(address _user, address _token)
        internal
        // only this contract can and need to call this function!
        //    public
        // why does this need to be public? it does NOT!
        onlyOwner
    {
        // if (stakingBalance[_token][_user] == Null) {
        if (stakingBalance[_token][_user] <= 0) {
            // stakers.push(_user);
            uniqueTokenStaked[_user] = uniqueTokenStaked[_user] + 1;
        }
    }

    function addAllowedTokens(address _token) public onlyOwner {
        allowedTokens.push(_token);
    }

    function tokenIsAllowed(address _token) public returns (bool) {
        for (uint256 i = 0; i < allowedTokens.length; i++) {
            if (allowedTokens[i] == _token) {
                return true;
            }
        }
        return false;
    }
}

