contract Exchange {

    uint256 constant ORACLE_UPDATE_TIME = 1 days;
    mapping (address => address) oracles;

    function _decimals() internal pure returns (uint8) {
        return 6;
    }

    function _setOracle(address token_, address oracle_) internal {
        require (oracle_ != address(0x0), "Oracle address can't be zero address");
        oracles[token_] = oracle_;
    }

    function _removeOracle(address token_) internal {
        if (oracles[token_] != address(0x0)) {
            oracles[token_] = address(0x0);
        }
    }

    function getOracle(address _token) view public returns (address) {
        return oracles[_token];
    }

    function calculateBricAmount(address _tokenAddress, uint256 _amount, uint8 _tokenDecimals, uint256 _minBrickAllowed) internal view returns (uint256) {

        require(oracles[_tokenAddress] != address(0), "This cryptocurrency is not accepted for payment");

        AggregatorV3Interface oracle = AggregatorV3Interface(oracles[_tokenAddress]);
        uint256 _oracleTimestamp;
        int256 _answer;
        (, _answer,, _oracleTimestamp,) = oracle.latestRoundData();
        
        uint256 _blockTimestamp = block.timestamp;
        require(_blockTimestamp - _oracleTimestamp < ORACLE_UPDATE_TIME, "Price feed is too old");
        uint8 oracleDecimals = oracle.decimals();

        require(_answer > 0, "Price feed is corrupted");

        // TODO: reduce operations
        uint256 brickAmount = _amount * uint256(_answer) * 10 ** _decimals();
        brickAmount /= (10 ** (oracleDecimals + _tokenDecimals));
        require (brickAmount > 0, "Resulting BRIC amount is below the minimum accepted value");
        require(brickAmount >= _minBrickAllowed, "Resulting BRIC amount is below the slippage level");

        return brickAmount;
    }
}

