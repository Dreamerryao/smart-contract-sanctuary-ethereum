pragma solidity ^0.8.9;

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/IERC20Metadata.sol";
import "./RBClient.sol";
import "./Exchange.sol";
import "./IBrickNft.sol";

contract BrickToken is RBClient, ERC20, Exchange {
    
    uint256 deployDate;
    address treasury;
    IBrickNft nft;

    constructor(address rbac_) RBClient(rbac_) ERC20("Brick Token", "BRIC") {
        deployDate = block.timestamp;
    }

    function decimals() public pure override returns (uint8) {
        return _decimals();
    }

    function setTreasury(address _treasury) public onlyAdmin {
        treasury = _treasury;
    }

    function setOracle(address token_, address oracle_) public onlyAdmin {
        _setOracle(token_, oracle_);
    }

    function removeOracle(address token_) public onlyAdmin {
        _removeOracle(token_);
    }

    function setNftContract(address _nft) public onlyAdmin {
        nft = IBrickNft(_nft);
    }

    // Must be fetched with up-to-date Brick Distribution scheme. Now it is 150kk every year, 100kk last year
    function maxSupplyAllowed() public view returns (uint256) {
        uint256 timeFromStart = block.timestamp - deployDate;
        if (timeFromStart < 365 days) return 150_000_000 * decimals();
        if (timeFromStart < 2 * (365 days)) return 2 * 150_000_000 * decimals();
        if (timeFromStart < 3 * (365 days)) return 3 * 150_000_000 * decimals();
        if (timeFromStart < 4 * (365 days)) return 4 * 150_000_000 * decimals();
        if (timeFromStart < 5 * (365 days)) return 5 * 150_000_000 * decimals();
        if (timeFromStart < 6 * (365 days)) return 6 * 150_000_000 * decimals();
        return 1_000_000_000 * decimals();
    }

    function mint(address _address, uint256 _amount) public onlyMinter {
        require (_amount + totalSupply() <= maxSupplyAllowed(), "You cannot mint over the threshold");
        _mint(_address, _amount);
    }

    function buyWithTokens(address _tokenAddress, uint256 _amount, uint256 _minBrickAllowed) public {
        require(_tokenAddress != address(0), "Use function 'buyWithEther' for payments in Ethereum");

        IERC20Metadata token = IERC20Metadata(_tokenAddress);
        uint256 allow = token.allowance(msg.sender, address(this));
        require (allow >= _amount, "Insufficient allowance level");

        uint256 brickAmount = calculateBricAmount(_tokenAddress, _amount, token.decimals(), _minBrickAllowed);

        token.transferFrom(msg.sender, treasury, _amount);
        _mint(msg.sender, brickAmount);

    }

    function buyWithEther(uint256 _minBrickAllowed) public payable {
        
        uint256 value = msg.value;
        uint256 brickAmount = calculateBricAmount(address(0), value, 18, _minBrickAllowed);

        payable(treasury).transfer(value);

        _mint(msg.sender, brickAmount);

    }

    function requestedTransfer(address from, address to, uint256 amount) external {
        address nftAddress = address(nft);
        require (nftAddress != address(0), "Nft contract is not set");
        require (msg.sender == nftAddress, "This function is used only for NFT-sale");
        require (balanceOf(from) >= amount, "Balance is insufficient");
        _transfer(from, to, amount);
    }
}

