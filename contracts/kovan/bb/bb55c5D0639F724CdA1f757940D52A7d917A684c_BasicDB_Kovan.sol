contract BasicDB_Kovan is Ownable {
    constructor() {}

    address lendingPoolAddr = 0xE0fBa4Fc209b4948668006B2bE61711b7f465bAe;
    address kovanDai = 0xFf795577d9AC8bD7D90Ee22b6C1703490b6512FD;
    address USDT = 0x13512979ADE267AB5100878E2e0f485B568328a4;
    address USDC = 0xe22da380ee6B445bb8273C81944ADEB6E8450422;
    address ROUTER = 0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D;
    ILendingPool lendingPool = ILendingPool(lendingPoolAddr);
    event Log(string message, uint256 val);

    //   // important to receive ETH
    receive() external payable {}

    function b2(
        address _borrowAsset1,
        uint256 _borrowAmt1,
        address _borrowAsset2,
        uint256 _borrowAmt2
    ) public {
        borrow(_borrowAsset1, _borrowAmt1);
        borrow(_borrowAsset2, _borrowAmt2);
        addLiquidity(_borrowAsset1, _borrowAsset2, _borrowAmt1, _borrowAmt2);
    }

    function depositDai(uint256 _depositAmount) public {
        IERC20(kovanDai).approve(lendingPoolAddr, _depositAmount);
        lendingPool.deposit(kovanDai, _depositAmount, address(this), uint16(0));
    }

    function borrow(address _borrowAsset, uint256 _borrowAmt) public {
        lendingPool.borrow(
            _borrowAsset,
            _borrowAmt,
            2,
            uint16(0),
            address(this)
        );
    }

    function addLiquidity(
        address _tokenA,
        address _tokenB,
        uint256 _amountA,
        uint256 _amountB
    ) public {
        IERC20(_tokenA).approve(ROUTER, _amountA);
        IERC20(_tokenB).approve(ROUTER, _amountB);
        
        (
            uint256 amountA,
            uint256 amountB,
            uint256 liquidity
        ) = IUniswapV2Router(ROUTER).addLiquidity(
                _tokenA,
                _tokenB,
                _amountA,
                _amountB,
                1,
                1,
                address(this),
                block.timestamp
            );

        emit Log("amountA", amountA);
        emit Log("amountB", amountB);
        emit Log("liquidity", liquidity);
    }
}

