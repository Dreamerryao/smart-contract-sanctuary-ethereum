// File: contracts/TiltMinter.sol



pragma solidity ^0.8.0;




/*
Ranks:
0 Unranked
[1, 5] Herald
[6, 10] Guardian
[11, 15] Crusader
[16, 20] Archon
[21, 25] Legend
[26, 30] Ancient
[31, 35] Divine
[36] Immortal
*/

contract TiltMinter is Ownable {
  uint8 public constant RANKS = 37;
  uint256 public constant RANK_MULTIPLIER = 126;
  uint256 public constant RANK_MULTIPLIER_DIVIDER = 100; // Makes multiplier x1.26
  uint256 public constant DEVELOPER_SHARE = 9; // 10% = (x/9)/(x+x/9)
  mapping(uint8 => uint256) private TOKENS_PER_RANKED;

  address oracle;
  address tiltedToken;
  address developer;
  mapping(string => uint256[RANKS]) playerWins;

  constructor(address _tiltedToken) {
    tiltedToken = _tiltedToken;

    // Precompute tokens per ranked
    for (uint8 i = 0; i < RANKS; i++) {
      TOKENS_PER_RANKED[i] = computeTokensPerRanked(i);
    }
  }

  function setOracle(address _oracle) onlyOwner external {
    oracle = _oracle;
  }

  function mint(address account, uint256 amount) private {
    ITilt(tiltedToken).mint(account, amount);
    ITilt(tiltedToken).mint(developer, amount / DEVELOPER_SHARE);
  }

  function claimTokens(string memory player, uint256[RANKS] memory wins, bytes memory signature) external {
    // Verify signature is correct
    bytes32 message = getExpectedOracleMessage(player, wins, msg.sender);
    address result = ECDSA.recover(ECDSA.toEthSignedMessageHash(message), signature);
    require(result == oracle);

    // Check how much it needs to print
    uint256 tokensToPrint = 0;
    for (uint8 rank = 0 ; rank < RANKS; rank++) {
      if (playerWins[player][rank] < wins[rank]) {
        tokensToPrint += (wins[rank] - playerWins[player][rank]) * getTokensPerRanked(rank);
        playerWins[player][rank] = wins[rank];
      }
    }

    // Print and set wins
    require(tokensToPrint > 0);
    mint(msg.sender, tokensToPrint);
  }

  function getTotalMintedTilt(string memory player) public view returns(uint256) {
    uint256 sum = 0;

    for (uint8 rank = 0; rank < RANKS; rank++) {
      sum += playerWins[player][rank] * getTokensPerRanked(rank);
    }

    return sum;
  }

  function getTokensPerRanked(uint8 rank) public view returns (uint256) {
    return TOKENS_PER_RANKED[rank];
  }

  function computeTokensPerRanked(uint8 rank) private pure returns (uint256) {
    uint256 tokens = 10 ** 18;

    for(uint8 i = 0; i < rank; i++) {
      tokens = (tokens * RANK_MULTIPLIER) / RANK_MULTIPLIER_DIVIDER;
    }

    return tokens;
  }

  function getExpectedOracleMessage(string memory summoner, uint[RANKS] memory wins, address recipient) private pure returns (bytes32 message) {
    return keccak256(abi.encodePacked(
      summoner,
      wins,
      recipient
    ));
  }
}