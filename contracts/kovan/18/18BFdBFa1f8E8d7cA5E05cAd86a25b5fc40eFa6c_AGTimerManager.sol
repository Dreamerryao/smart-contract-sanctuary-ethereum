contract AGTimerManager {
    uint256 constant DUST_PER_COMPLETE_ARTWORK = 30 days;

    IAGFairyDust fairyDust;
    IAGPuzzlePieceNFT puzzlePieceNFT;

    mapping(uint256 => mapping(address => uint256)) timersPerArtworkPerCollector;


    constructor(IAGFairyDust fairyDust_){
        fairyDust = fairyDust;
    }

    function timer(uint256 artworkId, address collector) external view returns (uint256 expiryTimestamp) {
        return timersPerArtworkPerCollector[artworkId][collector];
    }


    //    timerManager.extendTimer(artowkId, to, 3 days)

    function extend(uint256 artworkId, uint32 dustAmount) external {
        require(fairyDust.balanceOf(msg.sender) >= dustAmount, "AGTimerManager: you're not dusty enough");
        fairyDust.burn(msg.sender, dustAmount * 10 ** 18); //TODO fix decimals
        timersPerArtworkPerCollector[artworkId][msg.sender] += dustAmount;
    }

    function reset(uint256 artworkId, address collector) external onlyPuzzlePieceNFT {
        timersPerArtworkPerCollector[artworkId][collector] = DUST_PER_COMPLETE_ARTWORK *
        puzzlePieceNFT.perArtworkBalance(artworkId, collector) / puzzlePieceNFT.artwork(artworkId).numPieces;
    }

    //    function _extend(uint256 artworkId, address collector, uint256 timeInSeconds) private {
    //        timersPerArtworkPerCollector[artworkId][msg.sender] +=
    //            secondsPerToken * dustPerCompleteArtwork;
    //    }

    modifier onlyPuzzlePieceNFT {
        require(address(puzzlePieceNFT) == msg.sender, "AGTimerManager: get lost");
        _;
    }
}