pragma solidity 0.7.3;

import "@openzeppelin/contracts/math/SafeMath.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@chainlink/contracts/src/v0.7/interfaces/AggregatorV3Interface.sol";
import "@openzeppelin/contracts/cryptography/MerkleProof.sol";
import "./IOrcs.sol";

contract OrcSales_II is Ownable {
    using SafeMath for uint256;
    IOrcs public orcs;

    uint256 public beginningOfPriceIncrease;
    address private oracleEthUsd;
    bytes32 public merkleRootWL;
    uint public maxPublic = 10;
    uint public maxWl = 1;
    uint public whitelistReserve = 3900;
    bool public whitelistSaleIsActive = false;
    bool public publicSaleIsActive = false;
    //uint256 public priceWhitelist = 50000000000000000; //this is the 0,05
    uint256 public priceWhitelist = 500000000000000; //this is the 0,0005 tests only
    //uint256 public pricePublic = 60000000000000000; //this is the 0,06
    uint256 public pricePublic = 600000000000000; //this is the 0,0006 tests only
    mapping(address => uint) private mintPerAddress;

    constructor(
        address _orcs,
        address _oracleEthUsd
    ) {
        orcs = IOrcs(_orcs);
        oracleEthUsd = _oracleEthUsd;
    }

    /**
     * @dev Main sale function
     */
    function mintPublic(uint256 numberOfOrcs) payable external {
        require(publicSaleIsActive, "Sale is not active");
        require(msg.value >= pricePublic.mul(numberOfOrcs), "Ether value sent is incorrect");
        require(mintPerAddress[msg.sender].add(numberOfOrcs) <= maxPublic, "Max per Wallet reached");

        for (uint256 i; i < numberOfOrcs; i++) {
            orcs.mint(msg.sender);
            mintPerAddress[msg.sender] = mintPerAddress[msg.sender].add(1);
        }

        forwardFee(calculateFee(), numberOfOrcs);
    }

    function mintWhitelist(uint256 numberOfOrcs, bytes32[] calldata merkleProof) payable external {
        require(whitelistSaleIsActive, "WL sale not active");
        require(numberOfOrcs > 0 && numberOfOrcs <= 1, "1 per TX allowed");
        require(msg.value >= priceWhitelist.mul(numberOfOrcs), "Ether value sent is incorrect");
        require(mintPerAddress[msg.sender].add(numberOfOrcs) <= maxWl, "Max per wallet reached");
        require(MerkleProof.verify(merkleProof, merkleRootWL, keccak256(abi.encodePacked(msg.sender))), "Invalid proof");


        for (uint256 i; i < numberOfOrcs; i++) {
            if (orcs.totalSupply() <= whitelistReserve) {
                orcs.mint(msg.sender);
                mintPerAddress[msg.sender] = mintPerAddress[msg.sender].add(1);
            } else {
                whitelistSaleIsActive = !whitelistSaleIsActive;
            }
        }

        forwardFee(calculateFee(), numberOfOrcs);
    }

    function removeFunds() external onlyOwner {
        uint256 funds = address(this).balance;

        // uint256 pShare = funds.mul(20).div(100);
        (bool success2,) = 0xC3423dc8457653e935C18BFA02F4fB6E427Dba5f.call{
        value : funds.mul(20).div(100)
        }("");

        // uint256 kShare = funds.mul(2).div(100);
        (bool success3,) = 0x1aB8E192EE4b8BEa632f61623bd5Af42fb518cb1.call{
        value : funds.mul(2).div(100)
        }("");

        // uint256 nShare = funds.mul(4).div(100);
        (bool success4,) = 0xeb3853d765870fF40318CF37f3b83B02Fd18b46C.call{
        value : funds.mul(4).div(100)
        }("");

        // uint256 fShare = funds.mul(4).div(100);
        (bool success5,) = 0xCE1f60EC76a7bBacED41816775b842067d8D17B3.call{
        value : funds.mul(4).div(100)
        }("");

        // uint256 communityWalletShare = funds.mul(10).div(100);
        (bool success6,) = 0x66A6DF0126F79D85bb829a40cC1315cB4196A154.call{
        value : funds.mul(10).div(100)
        }("");

        // uint256 costsWalletShare = funds.mul(10).div(100);
        (bool success7,) = 0xf05F6CAa6ebDe3d00644F16B3D86802feb6a6516.call{
        value : funds.mul(10).div(100)
        }("");

        // uint256 marketingShare = funds.mul(30).div(100);
        (bool success8,) = 0x7dC75A5af85F377e5402D138a0B2f8E366B8673D.call{
        value : funds.mul(30).div(100)
        }("");

        // remining to owner. 20%
        (bool success, ) = owner().call{value: address(this).balance}("");

        require(
            success &&
                success2 &&
                success3 &&
                success4 &&
                success5 &&
                success6 &&
                success7 &&
                success8,
            "funds were not sent properly"
        );
    }

    function calculateFee() public view returns (uint256) {
        (, int256 price, , ,) = AggregatorV3Interface(oracleEthUsd)
        .latestRoundData();
        uint256 currentETHPriceInUSD = uint256(price).div(10 ** 8);
        // price comes in 8 decimals

        uint256 take = 10;
        uint256 res = take.mul(10000).div(currentETHPriceInUSD) * 10 ** 18;
        // ETH has 18 decimals

        return res.div(10000);
    }

    function forwardFee(uint256 fee, uint256 numberOfOrcs) internal {
        (bool success,) = 0x519B8faF8b4eD711F4Aa2B01AA1E3BaF3B915ac9.call{
        value : fee.mul(numberOfOrcs)
        }("");

        require(success, "fee was not sent properly");
    }

    function setPriceWL(uint256 newPriceWL) external onlyOwner {
        priceWhitelist = newPriceWL;
    }

    function setPrice(uint256 newPrice) external onlyOwner {
        pricePublic = newPrice;
    }

    function mintGiveAway(address[] memory recipients) external onlyOwner {
        for (uint256 i; i < recipients.length; i++) {
            orcs.mint(recipients[i]);
        }
    }

    function updateMerkleRoot(bytes32 newMerkleRoot) external onlyOwner {
        merkleRootWL = newMerkleRoot;
    }
}

