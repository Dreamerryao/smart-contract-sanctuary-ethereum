        // reset winner arrays
        delete winnersPb;
        delete winnersPbOne;
        delete winnersPbTwo;
        delete winnersPbThree;
        delete winnersNoPbThree;
        delete winnersPbFour;
        delete winnersnoPbFive;
        delete winnersJackpot;
        // reset participants array
