    // Affiliate will double as ops if no affiliate is specified
    function takeFees(uint256 amount, address affiliate)
        internal
        returns (uint256)
    {
        uint256 mFee = (amount * opsFee) / n;
        uint256 aFee = (amount * affiliateFee) / n;
        uint256 liquidityFee = (amount * lFee) / n;
        uint256 dFee = (amount * divFee) / n;
        // swap rewards amount and send to the staking contract
        // pay dividends
        if (balances[divs] >= dividendThreshold) {
            payable(divs).transfer(balances[divs]);
            balances[divs] = 0;
        } else {
            balances[divs] = balances[divs] + dFee;
        }

        // pay affiliate
        if (affiliate == ops) {
            balances[ops] = balances[ops] + aFee + mFee;
        } else {
            balances[affiliate] = balances[affiliate] + aFee;
            balances[ops] = balances[ops] + mFee;
        }

        swapETHForTokensWithFee(vicex, deadAddress, liquidityFee);

        return amount - mFee - aFee - liquidityFee - dFee;
    }

