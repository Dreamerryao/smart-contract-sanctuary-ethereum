  function decimals() external view returns (uint8);
  function description() external view returns (string memory);
  function version() external view returns (uint256);

  // getRoundData and latestRoundData should both raise "No data present"
  // if they do not have data to report, instead of returning unset values
  // which could be misinterpreted as actual reported values.
  function getRoundData(uint80 _roundId)
    external
    view
    returns (
      uint80 roundId,
      int256 answer,
      uint256 startedAt,
      uint256 updatedAt,
      uint80 answeredInRound
    );
  function latestRoundData()
    external
    view
    returns (
      uint80 roundId,
      int256 answer,
      uint256 startedAt,
      uint256 updatedAt,
      uint80 answeredInRound
    );

}

contract ChainLinkSourceWrapper {

    using SafeMath for uint256;

    address public owner;

    struct TokenConfig {
        address token;
        string pair; //ETH-USD ; xLON-ETH-USD
        address[] sources;
        //如果source累计的价格为8位，那么baseUint==1；如果累计价格为26位，那么baseUint==1e18；如果累计价格为18位，那么baseUint==1e10；
        uint baseUint;
    }

    mapping(address => TokenConfig) tokenConfigs;

    constructor() public {
        owner = msg.sender;
    }


    function getPrice(address token) external view returns (uint){
        (uint price,) = getLatestRoundDataInternal(token);
        return price;
    }

    function latestRoundData(address token) external view returns (uint, uint){
        return getLatestRoundDataInternal(token);
    }

    function getLatestRoundDataInternal(address token) internal view returns (uint, uint){

        uint price = 1;
        uint timestamp = block.timestamp;

        TokenConfig storage tokenConfig = tokenConfigs[token];
        for (uint i = 0; i < tokenConfig.sources.length; i++) {
            address source = tokenConfig.sources[i];

            (,int _price,,uint updatedAt,) = AggregatorV3Interface(source).latestRoundData();
            price = uint(_price).mul(price);
            timestamp = updatedAt;
        }

        return (price.div(tokenConfig.baseUint), timestamp);
    }

    function setTokenConfig(address token, string memory pair, address[] memory sources, uint baseUint) public {
        require(owner == msg.sender, "Ownable: caller is not the owner");

        TokenConfig storage tokenConfig = tokenConfigs[token];
        tokenConfig.token = token;
        tokenConfig.pair = pair;
        tokenConfig.sources = sources;
        tokenConfig.baseUint = baseUint;
    }


}