import "./IDCardProperties/PrimaryTokenERC721.sol";
import "./IDCardProperties/UsernameStorage.sol";
import "./IDCardProperties/Payment.sol";
import "./IDCardProperties/EternalStorage.sol";

contract IDCard is ERC721, ERC721URIStorage, PrimaryTokenERC721, UsernameStorage, Payment, EternalStorage {

    function version() public pure returns(string memory V_) {
        V_ = "1.3.0";
    }

    constructor() ERC721("IDCard", "IDC") {
        //assign the token number 0 to the DAO
        _safeMint(msg.sender, 0);
        _assignUsername(0, "DAO");
    }

    function signIn(
        string memory _username,
        string memory uri,
        uint256[] memory referralIds,
        uint256[] memory commissionPercents
    ) public payable {
        _registerPayment(_username, msg.value, referralIds, commissionPercents);

        uint256 tokenId = userId_(_username);

        _safeMint(msg.sender, tokenId);
        _setTokenURI(tokenId, uri);

        _assignUsername(tokenId, _username);
    }

    function setTokenURI(uint256 tokenId, string memory _tokenURI) public approvedOrOwnerOf(tokenId){
        _setTokenURI(tokenId, _tokenURI);
    }


