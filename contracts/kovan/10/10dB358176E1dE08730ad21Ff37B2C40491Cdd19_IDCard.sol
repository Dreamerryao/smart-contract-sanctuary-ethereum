        _;
    }

    mapping(uint256 => mapping(bytes32 => bool)) bytes32ToBool;
    mapping(uint256 => mapping(bytes32 => uint)) bytes32ToUint;
    mapping(uint256 => mapping(bytes32 => int)) bytes32ToInt;
    mapping(uint256 => mapping(bytes32 => address)) bytes32ToAddress;
    mapping(uint256 => mapping(bytes32 => string)) bytes32ToString;
    mapping(uint256 => mapping(bytes32 => bytes)) bytes32ToBytes;

