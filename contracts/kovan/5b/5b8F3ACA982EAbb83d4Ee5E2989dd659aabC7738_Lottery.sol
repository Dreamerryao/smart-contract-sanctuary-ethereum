pragma solidity 0.6.6;

import "AggregatorV2V3Interface.sol";
import "SafeMathChainlink.sol";


contract Lottery {

    address[] public players;
    uint256 public USDEntyeFee;
    AggregatorV3Interface internal ethPriceFeed;

    constructor(address _priceFeedAddress) public {
        // 1 * 10 ** 26 + 26 decimal is $1
        USDEntyeFee = 1 * 10 ** 26; 
        ethPriceFeed = AggregatorV3Interface(_priceFeedAddress);
    }

    function enter() public payable {
        // $1 minimum

        players.push(msg.sender);
    }

    // what is the minimum WEI the player should pay to enter to the game.
    // this function calculates the amount using the USD price of ETH.
    function getEntranceFee() public view returns (uint256) {
        (,int256 answer,,,) = ethPriceFeed.latestRoundData();
        // i take thid address withb 26 decimals as the wei price
        uint256 entranceFee = USDEntyeFee / uint(answer);
        return entranceFee;
    }
    function startLottery() public {}
    function endLottery() public {}
}

