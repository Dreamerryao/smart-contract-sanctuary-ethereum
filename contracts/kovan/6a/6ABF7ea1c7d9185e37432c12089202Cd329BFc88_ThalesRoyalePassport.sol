        return
            string(
                abi.encodePacked(
                    "data:application/json;base64,",
                    Base64.encode(
                        bytes(
                            abi.encodePacked(
                                '{"name":"',
                                "Thales Royale Passport",
                                '", "description":"ThalesRoyalePassport!", "attributes":"", "image":"',
                                imageURI,
                                '"}'
                            )
                        )
