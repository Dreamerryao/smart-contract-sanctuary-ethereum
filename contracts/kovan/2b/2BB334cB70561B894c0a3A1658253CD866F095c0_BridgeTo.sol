contract BridgeTo is ERC20("USDC Token", "USDC") {
    using SafeMath for uint256;

    address public dev_adr;

    event Burn(address indexed from, uint256 _amount);
    event Mint(address indexed to, uint256 _amount);

    constructor(address _adr) public {
        dev_adr = _adr;
    }

    //release new token from deposit from other chain
    function mint(address to, uint256 _amount) public onlyOwner {
        uint256 dev_cut = _amount.mul(2).div(1000);
        _mint(dev_adr, dev_cut );
        _mint(to, _amount.sub(dev_cut));
        emit Mint(to, _amount);
    }

    //burn token to withdraw to other chain
    function burn(address from, uint256 _amount) public {
        _burn(from, _amount);
        emit Burn(from, _amount);
    }

}