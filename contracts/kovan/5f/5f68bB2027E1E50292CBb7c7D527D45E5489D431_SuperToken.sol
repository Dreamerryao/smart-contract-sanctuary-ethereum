pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "./DataUpdater.sol";
import "./ISuperToken.sol";

contract SuperToken is ERC20, ISuperToken {
    using SafeMath for uint256;

    DataUpdater dataUpdater = new DataUpdater(address(this));
    uint256 public constant initialSupply = 7953952567 * 1e18; // World population in 2022
    uint256 public wantedSupply;
    uint256 public diff;

    constructor() ERC20("Super Token", "SPT") {
        uint256 creatorPart = 1e9 * 1e18;
        _mint(msg.sender, creatorPart);
        _mint(address(this), initialSupply.sub(creatorPart));
    }

    function selfBurn(uint256 qty) public {
        wantedSupply = initialSupply.sub(qty);
        diff = totalSupply().sub(wantedSupply);
        if (diff > 0)
        {
            _burn(address(this), diff);
        }
    }
}

