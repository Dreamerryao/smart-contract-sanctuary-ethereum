pragma solidity ^0.8.0;

import "IERC20.sol";
import "SafeERC20.sol";
import "SafeMath.sol";
import "Math.sol";
import "IInsureConfig.sol";
import "IMasterChef.sol";
import "IInsurance.sol";

contract Insurance is IInsurance {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    address public governance;
    address public pendingGovernance;
    address public feeReward;
    IInsureConfig public config;
    IMasterChef public masterChef;
    IERC20 public token;
    uint256 public delay = 2 days;
    uint256 public interval = 14 days;
    uint256 public pid;
    uint256 public mcr = 0;

    mapping(address => uint256) public depositAt;

    struct Policy {
        address project;
        address owner;
        uint128 amount;
        uint128 coverage;
        uint128 beginTime;
        uint128 endTime;
        uint256 state;
    }

    mapping(uint256 => Policy) public policys;
    uint256 public nextPolicyID = 1;

    uint256 constant public corr = 500 * 2;
    uint256 public square = 0;

    struct ProjectInfo {
        uint128 coverage;
        uint128 value;
    }

    mapping(address => ProjectInfo) public projectInfos;
    mapping(address => mapping(address => uint256)) public corrValue;

    constructor(address config_, address masterChef_, address feeReward_) {
        governance = msg.sender;
        config = IInsureConfig(config_);
        masterChef = IMasterChef(masterChef_);
        feeReward = feeReward_;
    }

    function acceptGovernance() public {
        require(msg.sender == pendingGovernance, "!pendingGovernance");
        governance = msg.sender;
        pendingGovernance = address(0);
    }

    function setPendingGovernance(address _pendingGovernance) public {
        require(msg.sender == governance, "!governance");
        pendingGovernance = _pendingGovernance;
    }

    function setToken(uint256 pid_) public {
        require(msg.sender == governance, "!governance");
        token = IERC20(masterChef.tokenAddress(pid_));
        pid = pid_;
    }

    function order(address project_, uint256 period_, uint256 coverage_) external {
        (uint256 _classID, uint256 _projectID, uint256 _leverageFactor, uint256 _coverageFactor, uint256 _policyPrice) = config.projectConfig(project_);
        ProjectInfo storage _projectInfo = projectInfos[project_];
        uint256 _projectCoverage = uint256(_projectInfo.coverage).add(coverage_);
        uint256 _total = masterChef.totalAmount(pid);
        require(_projectCoverage <= _total * _coverageFactor / 10000, "!projectCoverage");
        _projectInfo.coverage = uint128(_projectCoverage);

        {
            uint256 _projectValue = _projectCoverage * _leverageFactor;
            _projectInfo.value = uint128(_projectValue);
            uint256 _mcr = compute(project_, _classID, _projectID, _projectValue);
            require(_mcr < _total, "!mcr");
            mcr = _mcr;
        }

        // uint256 _amount = _policyPrice  * period_ / 1 days * coverage_ / 10e18;
        uint256 _amount = _policyPrice.mul(period_).mul(coverage_).div(86400 * 10e18);
        token.safeTransferFrom(msg.sender, feeReward, _amount);

        Policy memory _policy = Policy({
            project: project_,
            owner: msg.sender,
            amount: uint128(_amount),
            coverage: uint128(coverage_),
            beginTime: uint128(block.timestamp),
            endTime: uint128(block.timestamp + period_),
            state: 1
        });
        uint256 _policyID = nextPolicyID++;
        policys[_policyID] = _policy;

    }

    function updateOrder(uint256 _policyID) external {
        Policy storage policy = policys[_policyID];
        require(policy.state ==  1, "!policy state");
        require(policy.endTime + delay < block.timestamp, "!policy endTime");
        policy.state =  0;
        ProjectInfo storage _projectInfo = projectInfos[policy.project];
        uint256 _projectCoverage = _projectInfo.coverage - policy.coverage;
        (uint256 _classID, uint256 _projectID, uint256 _leverageFactor, , ) = config.projectConfig(policy.project);
        uint256 _projectValue = _projectCoverage * _leverageFactor;
        _projectInfo.coverage = uint128(_projectCoverage);
        _projectInfo.value = uint128(_projectValue);

        mcr = compute(policy.project, _classID, _projectID, _projectValue);
    }

    function pay(uint256 _policyID, uint256 _amount) external {
        require(msg.sender == governance, "!governance");
        Policy memory policy = policys[_policyID];
        require(policy.coverage >=  _amount, "!policy coverage amount");
        masterChef.payTransfer(pid, policy.owner, _amount);
    }

    function compute(address project_, uint256 classID_, uint256 projectID_, uint256 projectValue_) internal returns(uint256) {
        uint256 _beforeCorrValue = 0;
        uint256 _afterCorrValue = 0;

        address _project1 =  project_;
        address _project2 =  project_;
        uint256 _projectValue;
        uint256 _corrValue;
        uint256 _corr;
        address[] memory _projectClass = config.projectClass(classID_);
        for (uint256 _pid = 0; _pid < _projectClass.length; ++_pid) {
            if (_pid == projectID_) {
                _project1 = project_;
                _projectValue = projectValue_;
                _corr = 10000;
            }else if (_pid < projectID_) {
                _project1 = _projectClass[_pid];
                _projectValue = projectInfos[_project1].value;
                _corr = corr;
            }else {
                _project2 = _projectClass[_pid];
                _projectValue = projectInfos[_project2].value;
                _corr = corr;
            }
            _beforeCorrValue = _beforeCorrValue + corrValue[_project1][_project2];
            _corrValue = _corr * projectValue_ * _projectValue;
            _afterCorrValue = _afterCorrValue + _corrValue;
            corrValue[_project1][_project2] = _corrValue;
        }
        square = square - _beforeCorrValue + _afterCorrValue;
        return Math.sqrt(square) / 1000000;
    }
}

